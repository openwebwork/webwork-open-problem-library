$b1 = random(16,24,1);
$b = 10*$b1;
$b2 = $b1 + 2;

$c[0] = random(0,2,1);
$data[0] = $b + $c[0];
$c[1] = $c[0];
$data[1] = $data[0];
$t = random(1,3,1);
$data[2] = $data[1] + $t;
$c[2] = $t + $c[1];
$t = random(1,3,1);
$data[3] = $data[2] + $t;
$c[3] = $t + $c[2];


$c[4] = 0;
$data[4] = $b + 10;
$c[5] = random(2,7,1);
$data[5] = $data[4] + $c[5];
$c[6] = $c[5];
$data[6] = $data[5];
$c[7] = $c[6];
$data[7] = $data[6];
$t = random(1,2,1);
$data[8] = $data[7] + $t;
$c[8] = $t + $c[7];


$c[9] = random(3,6,1);
$data[9] = $b + 20 + $c[9];
$t = random(0,2,1);
$data[10] = $data[9] + $t;
$c[10] = $t + $c[9];
$c[11] = 9;
$data[11] = $b + 20 + $c[11];
$c[12] = $c[11];
$data[12] = $data[11];


$c[13] = random(0,4,1);
$data[13] = $b + 30 + $c[13];
$c[14] = random(8,9,1);
$data[14] = $b + 30 + $c[14];


$c[15] = random(0,3,1);
$data[15] = $b + 40 + $c[15];
$t = random(0,3,1);
$data[16] = $data[15] + $t;
$c[16] = $t + $c[15];
$t = random(1,3,1);
$data[17] = $data[16] + $t;
$c[17] = $t + $c[16];

@slice = NchooseK(18,18);
@a = @data[@slice];

$mean = 0;
for ($i = 0; $i < 18; $i++) {
    $mean += $a[$i];
}

$mean = $mean/18;
$mode = $data[5];
$median = ($data[8]+$data[9])/2;

$sqdevs = 0;
for ($i = 0; $i < 18; $i++) {
    $sqdevs += ($a[$i]-$mean)**2;
}
$variance = $sqdevs/17;
$stdev = $variance**(0.5);
$coefvar = $stdev/$mean;


BEGIN_TEXT
