DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGnumericalmacros.pl",
  "PGstatisticsmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;
install_problem_grader(~~&std_problem_grader);

$mc[1] = new_multiple_choice(); 
$mc[1]->qa('Data obtained from a nominal scale: ',
    'can be either numeric or nonnumeric'
);
$mc[1]->extra(
    'must be alphabetic',
    'must be numeric',
    'must rank order the data'
); 


$mc[2] = new_multiple_choice(); 
$mc[2]->qa('Data: ',
    'are the raw materials of statistics'
);
$mc[2]->extra(
    'are always numeric',
    'are always nonnumeric'
 );
$mc[2]->makeLast(
    'None of the above answers is correct'
);

$mc[3] = new_multiple_choice(); 
$mc[3]->qa('Data is collected from a: ',
    'population'
);
$mc[3]->extra(
    'sample',
    'variable'
);
$mc[3]->makeLast(
    'None of the above answers is correct'
);

$mc[4] = new_multiple_choice(); 
$mc[4]->qa('A set of measurements collected from a population is called a: ',
    'sample'
);
$mc[4]->extra(
    'variables',
    'statistic'
);
$mc[4]->makeLast(
    'None of the above answers is correct'
);

$mc[5] = new_multiple_choice(); 
$mc[5]->qa('All the data collected in a particular study are referred to as the: ',
    'data set'
);
$mc[5]->extra(
    'inference',
    'variable'
);
$mc[5]->makeLast(
    'None of the above answers is correct'
);


$a = random(1,5,1);
$b = random(1,5,1);
while ($a == $b) {
    $b = random(1,5,1);
}


BEGIN_TEXT
$PAR
\{ $mc[$a]->print_q() \}

\{ $mc[$a]->print_a() \}
$PAR
\{ $mc[$b]->print_q() \}

\{ $mc[$b]->print_a() \}
$PAR

END_TEXT

ANS(radio_cmp($mc[$a]->correct_ans));
ANS(radio_cmp($mc[$b]->correct_ans));

COMMENT('Questions selected randomly from a larger set.  See source for full question list.');
ENDDOCUMENT();       # This should be the last executable line in the problem.
