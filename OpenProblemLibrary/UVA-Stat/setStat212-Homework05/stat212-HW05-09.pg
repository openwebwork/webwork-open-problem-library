DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGnumericalmacros.pl",
"PGstatisticsmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
## install_problem_grader(~~&std_problem_grader);

$a1 = random(.20,.30,.01);
$a2 = random(.10,.15,.01);
$a3 = random(.40,.50,.01);
$a4 = 1-($a1+$a2+$a3);
$b1 = (($a1+$a2)+2*($a3+$a4));
$b2 = (($a1+$a3)+2*($a2+$a4));
$c1 = $a1+$a2;
$c2 = $a3+$a4;
$c3 = $a1+$a3;
$c4 = $a2+$a4;


BEGIN_TEXT
$PAR 
The bivariate distribution of X and Y is described below:
$PAR
$BCENTER
\{begintable(3)\}
\{row(" ", "X", " ")\}
\{row("Y", "1", "2")\}
\{row("1", $a1, $a3)\}
\{row("2", $a2, $a4)\}
\{endtable()\}
$ECENTER
$PAR
A.  Find the marginal probability distribution of X. 
$PAR
     1:  \{ans_rule(15)\}
$PAR
     2:  \{ans_rule(15)\}
$PAR
B.  Find the marginal probability distribution of Y.  
$PAR
     1:  \{ans_rule(15)\}
$PAR
     2:  \{ans_rule(15)\}
$PAR
C.  Compute the mean and variance of X.  
$PAR 
     Mean = \{ans_rule(15)\}
$PAR 
     Variance = \{ans_rule(15)\}
$PAR
C.  Compute the mean and variance of Y.  
$PAR
     Mean = \{ans_rule(15)\}
$PAR 
     Variance = \{ans_rule(15)\}





END_TEXT


ANS(num_cmp($a1+$a2));
ANS(num_cmp($a3+$a4));
ANS(num_cmp($a1+$a3));
ANS(num_cmp($a2+$a4));
ANS(num_cmp($b1));
ANS(num_cmp((((1-$b1)**(2))*($c1))+(((2-$b1)**(2))*($c2))));
ANS(num_cmp($b2));
ANS(num_cmp((((1-$b2)**(2))*($c3))+(((2-$b2)**(2))*($c4))));



ENDDOCUMENT();       # This should be the last executable line in the problem.
