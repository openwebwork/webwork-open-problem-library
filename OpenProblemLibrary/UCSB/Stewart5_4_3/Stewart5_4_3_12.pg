DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
$a=random(2,5,1);
$b=5*$a;
$c=3*$a;

Context("Interval");
$IntInc = Interval("(-inf,0)U(2,inf)");
$IntDec = Interval("(0,2)");
$IntCU  = Interval("(1,inf)");
$IntCD  = Interval("(-inf,1)");

Context("Vector");
$LMax   = Point("(0,5*$a)");
$LMin   = Point("(2,$a)");
$InfPt  = Point("(1,3*$a)");

# Insert problem text between the $PAR, and space for the
# answer, like this   \(y =\) \{ans_rule(50)\}
# just before the END_TEXT.

Context()->texStrings;
BEGIN_TEXT

$PAR
Let \(f(x)= $b-$c x^2 + $a x^3 \)

$PAR

Input the interval(s) on which \(f\) is increasing. 

$PAR

\{ans_rule(20)\}

$PAR

Input the interval(s) on which \(f\) is decreasing.

$PAR

\{ans_rule(20)\}

$PAR

Find the point(s) at which \(f\) achieves a local maximum.

$PAR

\{ans_rule(20)\}

$PAR
Find the point(s) at which \(f\) achieves a local minimum.

$PAR

\{ans_rule(20)\}

$PAR
Find the intervals on which \(f\) is concave up.
$PAR

\{ans_rule(20)\}

$PAR
Find the intervals on which \(f\) is concave down.

$PAR

\{ans_rule(20)\}

$PAR

Find all inflection points.

$PAR

\{ans_rule(20)\}

$PAR
END_TEXT
Context()->normalStrings;

# Insert an answer evaluator here, like this:
# ANS(fun_cmp("$a*sin(t)+$b*(-1)*cos(t)+C", var=>["t","C"]));

#increasing
ANS($IntInc->cmp);
#decreasing
ANS($IntDec->cmp);
#maxima
ANS($LMax->cmp);
#minima
ANS($LMin->cmp);
#concave up
ANS($IntCU->cmp);
#concave down
ANS($IntCD->cmp);
#inflection points
ANS($InfPt->cmp);


ENDDOCUMENT();
