## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Derivatives of polynomials and power functions)
## Institution(UCSB)
## MLT(Poly_positive_exponent_tangent)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('2.7')
## Problem1('12')
## KEYWORDS('Product','Quotient','Differentiation')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",

  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

do {
  $a=random(-10, -1);
  $b=random(2,4);
  $c=random(1,10);
} while(abs($a) == abs($b) || abs($a) == abs($c) || abs($b) == abs($c));

Context("Numeric");
Context()->variables->add(a=>'Real');
$f = Compute("1 + x + x^2");
$df = ($f->D);
$dfa = $df->substitute(x=>'a');
$ma = $df->eval(x=>$a);
$mb = $df->eval(x=>-1/$b);
$mc = $df->eval(x=>$c);

Context()->texStrings;

BEGIN_TEXT

$PAR

(a) Find the slope of the tangent line to the curve \(y=$f\) at the point where \(x=a\).

$BR$BR

(b-d) Find the slopes of the tangent lines at the points whose x-coordinates are: $BR$BR
$SPACE (b) \($a\), (c) \(-1/$b\), and (d) \($c\).

$BR$BR

(a) \{ans_rule(20)\} $BR$BR
(b) \{ans_rule(20)\} $BR$BR
(c) \{ans_rule(20)\} $BR$BR
(d) \{ans_rule(20)\}

END_TEXT

ANS($dfa->cmp);
ANS($ma->cmp);
ANS($mb->cmp);
ANS($mc->cmp);

ENDDOCUMENT();
