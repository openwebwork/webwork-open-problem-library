DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",

  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

Context("Numeric");

$a=non_zero_random(-3, 3);

$f = Compute("1 + 2x - x^3")->reduce;
$y = $f->eval(x=>$a);
$df = $f->D;
$m = $df->eval(x=>$a);
$line = Compute("$m * (x - $a) + $y");

Context()->texStrings;

BEGIN_TEXT

$PAR

Find the equation of the tangent line to the curve at the given point.  $PAR

\[y=$f, \,\, ($a,$y)\]

$PAR

\(y=\) \{ans_rule(20)\}

END_TEXT

ANS($line->cmp);

ENDDOCUMENT();
