## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Derivatives of polynomials and power functions)
## Institution(UCSB)
## MLT(Poly_positive_exponent_tangent)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('2.7')
## Problem1('13')
## KEYWORDS('Product','Quotient','Differentiation')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

do{
$a=random(1,10,1);
$b=random(-10,-1);
} while (abs($b) == abs($a));

Context("Numeric");
Context()->variables->add(a=>'Real');

$f = Compute("x^3 - 4x + 1")->reduce;
$ya = $f->eval(x=>$a);
$yb = $f->eval(x=>$b);
$df = $f->D;
$dfa = $df->substitute(x=>'a');
$ma = $df->eval(x=>$a);
$mb = $df->eval(x=>$b);
$linea = Compute("$ma * (x - $a) + $ya");
$lineb = Compute("$mb * (x - $b) + $yb");





Context()->texStrings;

BEGIN_TEXT
(a) Find the slope of the tangent line to the curve \(y=$f\) at the point where \(x=a\). $BR$BR

(b,c) Find the equations of the tangent lines at the points $BR$BR
$SPACE (b) \(($a, $ya)\) and (c) \(($b, $yb)\). 

$BR$BR

(a) \{ans_rule(20)\} $BR$BR
(b) \{ans_rule(20)\} $BR$BR
(c) \{ans_rule(20)\}

END_TEXT

ANS($dfa->cmp);
ANS($linea->cmp);
ANS($lineb->cmp);

ENDDOCUMENT();
