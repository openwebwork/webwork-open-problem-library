DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"MathObjects.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
do {
$a = random(0,2,1);
$b = random(-1,2,1);
} until ($a != 0 or $b != 1);

%xprime = ("0"=>2, "1"=>-1, "2"=>2);
%yprime = ("-1"=>-6, "0"=>2, "1"=>-2, "2"=>6 );

BEGIN_TEXT

Given the curve with equation 
\[y(y^2-1)(y-2)=x(x-1)(x-2),\]
find the equation of the tangent line at the points: 
$BR
$BR
(a) \((0,1)\) $BR
(b) \(($a,$b)\)

$BR$BR

(a) \(y =\) \{ans_rule(20)\} $BR
(b) \(y =\) \{ans_rule(20)\}

END_TEXT
Context('Numeric');
Context()->flags->set(
     reduceConstants => 0,
	 reduceConstantFunctions => 0,
);

ANS(Formula("-x+1")->cmp);
ANS(Compute("$xprime{$a}/$yprime{$b} * (x - $a) + $b ")->cmp);

ENDDOCUMENT();

