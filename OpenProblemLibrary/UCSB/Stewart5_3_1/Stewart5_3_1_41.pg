DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(1,4,1);
$b = 3*($a)**2 - ($a)**3;
BEGIN_TEXT

$PAR

Find the equation of the tangent line to the curve \(y=3x^2-x^3 \) at the point ($a,$b).

$PAR

\(y=\) \{ans_rule(30)\}


END_TEXT

ANS(fun_cmp("3*(2*$a- $a * $a)*(x-$a)+$b ", var=>"x"));

ENDDOCUMENT();
