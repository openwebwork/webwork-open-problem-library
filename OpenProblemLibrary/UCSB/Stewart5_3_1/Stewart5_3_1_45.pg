## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('3.1')
## Problem1('45')
## KEYWORDS('Product','Quotient','Differentiation')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-10, 10);
do {
  $b = non_zero_random(-4, 4);
  $c = non_zero_random(-4, 4);
} while (abs($b) == abs($c));

Context("Numeric");

$f = Compute("2 * x^3 - 3 * ($b + $c) * x^2 + 6 * $b * $c * x + $a")->reduce;

$ans = Compute("$b, $c");

Context()->texStrings;

BEGIN_TEXT

Find the x-coordinates of the points on the curve \(y=$f\) where the tangent is horizontal.$BR$BR
List these x-coordinates below.  If there are multiple values, separate them with commas.

$BR$BR

\(x=\) \{ans_rule(20)\}

END_TEXT

ANS($ans->cmp);


ENDDOCUMENT();
