## DBsubject(Calculus - single variable)
## DBchapter(Limits and continuity)
## DBsection(Evaluating limits - rationalizing)
## Institution(UCSB)
## Level(3)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('2.3')
## Problem1('58')
## KEYWORDS('Product','Quotient')
## MO(1)

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",

  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
$a = random(1,7,1);
$b = random(1,7,1);
if($a == $b)
{
$a++
}

$c = random(1,5,1);
$m = $b**2 + $c;
$n = $a**2 + $c;

BEGIN_TEXT
Evaluate:$BR
\(\displaystyle \lim_{x \to $c}\frac{\sqrt{$m-x}-$b}{\sqrt{$n-x}-$a} = \) \{ans_rule(10)\}\{helpLink("limits")\}
END_TEXT

$g = gcd($a,$b);
$num = $a/$g;
$denom = $b/$g;

Context("Numeric");

if($denom == 1)
{
$ans = Compute($num);
}
else
{
$ans = Compute("$num/$denom");
}

ANS($ans->cmp());

ENDDOCUMENT();
