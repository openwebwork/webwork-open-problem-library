DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
$a = random(2,7,1);
$a2 = $a**2;
$b = random(2,$a2-1,1);
$m = $a**2-$b;

BEGIN_TEXT
Evaluate the limit, if it exists. If not, enter DNE.$PAR
\(\displaystyle \lim_{x \to $b} \frac{\sqrt{x+$m}-$a}{x-$b} = \) \{ans_rule(10)\}\{AnswerFormatHelp("limits")\}
END_TEXT

Context("Numeric");
$twoa = 2*$a;

ANS(Compute("1/$twoa")->cmp());

ENDDOCUMENT();
