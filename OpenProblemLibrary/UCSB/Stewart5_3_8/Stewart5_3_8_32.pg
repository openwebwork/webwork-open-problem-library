DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
Context('Numeric');
$a=random(2,5,1);
$b=$a**3-1;
$c=random(-7,8,3);
$formula = nicestring([$c],["\ln(x^3- $b )"]);

$ans=Formula("3*$a^2*$c x -3*$a^3*$c")->reduce;

Context()->texStrings;
BEGIN_TEXT
Find the equation of the tangent line to the curve \(y=$formula \) at the point \( ($a,0)\).
$BR$BR

\(y =\) \{ans_rule(30)\}

END_TEXT
Context()->normalStrings;

ANS($ans->cmp());

ENDDOCUMENT();
