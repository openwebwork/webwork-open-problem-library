DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = random(10,99,1);
$b = 7;


$mc1 = new_multiple_choice();
$mc2 = new_multiple_choice();

$mc1->qa("Which of the following is the domain of the function?",
"All real numbers");

$mc1->extra(
"Positive real numbers",
"All real numbers except 0",
"x= $a",
"Nonnegative real numbers",
"Integers",
"Narnia",
"\(x\geq -1/2\)",
"\(x> -1/2\)",
);

$mc2->qa("Which of the following is the domain of the derivative?",
"All real numbers");

$mc2->extra(
"Positive real numbers",
"All real numbers except 0",
"x=$a",
"Nonnegative real numbers",
"Integers",
"Narnia",
"\(x\geq -1/2\)",
"\(x> -1/2\)",
);









BEGIN_TEXT

$PAR


\[f(x)=$a+$b x\]$PAR

Find the derivative of the function above using the definition of the derivative.$BR

\{ans_rule(40)\}$PAR

\{$mc1->print_q\}$BR
\{$mc1->print_a\}$PAR


\{$mc2->print_q\}$BR
\{$mc2->print_a\}$PAR


$PAR

END_TEXT

ANS(fun_cmp("7",vars=>['x']));
ANS(str_cmp($mc1->correct_ans));
ANS(str_cmp($mc2->correct_ans));

ENDDOCUMENT();
