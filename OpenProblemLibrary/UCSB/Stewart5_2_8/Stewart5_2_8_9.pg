DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

Context("Numeric");

$x=non_zero_random(-4,4,1);

$f = Compute("x^3 - 5x + 1")->reduce;
$y = $f->eval(x=>$x);
$df = $f->D;
$m = $df->eval(x=>$x);
$line = Compute("$m * (x - $x) + $y");

Context()->texStrings;


BEGIN_TEXT
If \(f(x)=$f\), find \(f'($x)\)

$BR$BR

\(f'($x) =\) \{ans_rule(50)\}

$BR$BR

Use it to find an equation of the tangent line to the curve \(y=$f\) at the point ($x, $y).

$BR$BR

\(y =\) \{ans_rule(50)\}


END_TEXT


ANS($m->cmp);

ANS($line->cmp);

ENDDOCUMENT();
