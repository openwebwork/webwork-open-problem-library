## DBsubject(Calculus - single variable)
## DBchapter(Applications of integration)
## DBsection(Surfaces of revolution)
## Institution(UCSB)
## MLT(AI-SR-setup_match)
## Level(3)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('8.2')
## Problem1('3')
## KEYWORDS('integration','surface area')

DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
$a=random(1,10,1);
$b=random(1,10,1)*random(-1,1,2);
$c=random(1,10,1)*random(-1,1,2);

BEGIN_TEXT
$PAR
END_TEXT

# Make a new checkbox multiple choice
$cmc = new_checkbox_multiple_choice();

# Insert some  questions and matching answers in the q/a list.
$cmc -> qa (
	"Which of the following integrals represents the area of the surface obtained by rotating the curve \(y=\sec(x),\;\;0 \le x \le \pi/4,\) about the \(y\)-axis?",
        "\( \displaystyle 2\pi \int_{0}^{\,\pi/4} {x\sqrt{1+(\sec(x)\tan(x))^2}}\,dx \)",
        );

# Insert some incorrect answers
$cmc -> extra(
        "\( \displaystyle 2\pi \int_{0}^{\,\pi/4} {x\sqrt{1+(2\sec(x)\tan(x))^2}}\,dx \)",
        "\( \displaystyle 2\pi \int_{0}^{\,\pi/4} {x\sqrt{1+(\tan^2(x))^2}}\,dx \)",
        "\( \displaystyle 2\pi \int_{0}^{\,\pi/4} {\sec(x)\sqrt{1+(\sec(x)\tan(x))^2}}\,dx \)",
        "\( \displaystyle 2\pi \int_{0}^{\,\pi/4} {\sec(x)\sqrt{1+(2\sec(x)\tan(x))^2}}\,dx \)",
        "\( \displaystyle 2\pi \int_{0}^{\,\pi/4} {\sec(x)\sqrt{1+(\tan^2(x))^2}}\,dx \)",
        );

# Print the text using $cmc->print_q for the questions and
# $cmc->print_a to print the answers.

BEGIN_TEXT
$PAR
\{$cmc -> print_q \}
$PAR
\{$cmc -> print_a \}
$PAR
END_TEXT

ANS(checkbox_cmp( $cmc->correct_ans ));

ENDDOCUMENT();
