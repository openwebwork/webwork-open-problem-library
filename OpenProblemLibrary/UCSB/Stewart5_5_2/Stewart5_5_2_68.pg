DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
$a=random(1,10,1);
$b=random(1,10,1)*random(-1,1,2);
$c=random(1,10,1)*random(-1,1,2);

BEGIN_TEXT
$PAR
END_TEXT

# Make a new checkbox multiple choice
$cmc = new_checkbox_multiple_choice();

# Insert some  questions and matching answers in the q/a list.
$cmc -> qa (
	"(a) Which of the following correctly expresses the limit \( \displaystyle \underset{n \rightarrow \infty}{\lim}\, \frac{1}{n}\, \overset{n}{\underset{i=1}{\sum}}\, \frac{1}{1+(i/n)^2}, \) as a definite integral?",
        "\(\displaystyle \int_{0}^{\,1} {\frac{1}{1+x^2}}\,dx\)",
        );

# Insert some incorrect answers
$cmc -> extra(

        "\(\displaystyle \int_{0}^{\,1} {\frac{2}{1+x^2}}\,dx\)",
        "\(\displaystyle \int_{0}^{\,1} {\frac{1}{1+x^3}}\,dx\)",
        "\(\displaystyle \int_{0}^{\,1} {\frac{1}{1+x^4}}\,dx\)",
        "\(\displaystyle \int_{0}^{\,1} {\frac{2}{1+x^4}}\,dx\)",
        "\(\displaystyle \int_{0}^{\,1} {\frac{2}{1+x^3}}\,dx\)",
        );

# Print the text using $cmc->print_q for the questions and
# $cmc->print_a to print the answers.

BEGIN_TEXT
$PAR
\{$cmc -> print_q \}
$PAR
\{$cmc -> print_a \}
$PAR
END_TEXT

ANS(checkbox_cmp( $cmc->correct_ans ));

ENDDOCUMENT();
