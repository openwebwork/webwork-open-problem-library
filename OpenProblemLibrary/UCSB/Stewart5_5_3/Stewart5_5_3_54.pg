DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

Context("Interval");

$a = random(2, 8);
$b = random(2, 8);
$b2 = -$b/2;
$c = int($b2 * $b2) + random(1, 6);

($upordown, $ans) = @{ list_random(
	['up', "(-Infinity,$b2)"],
	['down', "($b2,Infinity)"]) };

BEGIN_TEXT

Find the set on which the curve
\[ y = \int_{0}^{\,x}{\frac{$a}{t^2+$b t+$c}}\,dt \]
is concave ${upordown}ward.

$PAR
Answer (in interval notation): \{ ans_rule(15) \}
$PAR
$BBOLD Note:$EBOLD
Click here for information on \{helpLink('interval notation')\}.
$PAR

END_TEXT

ANS( Compute($ans)->cmp() );

;

ENDDOCUMENT();
