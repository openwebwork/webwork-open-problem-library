TEXT(beginproblem());

#####################################
#  Setup

Context("Numeric");

$w = random(2,5,1);   # work in Joules
$x = random(10,20,1); # displacement in cm
$xm = $x/100;         # displacement in meters

#####################################
#  Main text

BEGIN_TEXT
\{ BeginList('OL',type=>'a') \}
$ITEM
