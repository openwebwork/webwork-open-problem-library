## MLT(TaylorSeries_05)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('1')
## Section1('10.7')
## Problem1('37')
## KEYWORDS('Series', 'Taylor', 'Radius', 'Convergence', 'Coefficient')


##########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"unorderedAnswer.pl",
);

TEXT(beginproblem());


######################################
#  Setup

Context("Numeric");
Context()->flags->set(useBaseTenLog=>1);

$f = Compute("ln(x)");

$a = random(2,10,1);

$ans[0] = Compute("ln($a)");
$ans[1] = Compute("1/$a (x-$a)");
$ans[2] = Compute("-(1/$a)^2 / 2 (x-$a)^2");
$ans[3] = Compute(" (1/$a)^3 / 3 (x-$a)^3");
$ans[4] = Compute("-(1/$a)^4 / 4 (x-$a)^4");


######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the first five terms of the Taylor series for
the function \( f(x) = $f \) about the point \( a = $a \).
(Your answers should include the variable x when appropriate.) 
$BR
$BR
\( $f = \)
\{ans_rule(15)\} +
\{ans_rule(15)\} +
\{ans_rule(15)\} +
\{ans_rule(15)\} +
\{ans_rule(15)\} + ...
END_TEXT
Context()->normalStrings;


#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

UNORDERED_ANS(
 $ans[0]->cmp(),
 $ans[1]->cmp(),
 $ans[2]->cmp(),
 $ans[3]->cmp(),
 $ans[4]->cmp()
);


COMMENT('MathObject version.  Answers can be entered in any order.  Uses log = log10.');

ENDDOCUMENT();
