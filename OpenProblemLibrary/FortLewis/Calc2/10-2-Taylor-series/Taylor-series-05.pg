##########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "unorderedAnswer.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


######################################
#  Setup

Context("Numeric");

$a = random(1,5,1);
$a2 = 2*$a;
$aaa8 = $a**3 * 8;

$f = Compute("sqrt($a2 x - x^2)");

$ans[0] = Compute("$a");
$ans[1] = Compute("-1/$a2 (x-$a)^2");
$ans[2] = Compute("-1/$aaa8 (x-$a)^4");


######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the first three ${BBOLD}nonzero${EBOLD} terms of the Taylor series for
the function \( f(x) = $f \) about the point \( a = $a \).
(Your answers should include the variable x when appropriate.) 
$BR
$BR
\( $f = \)
\{ans_rule(25)\} +
\{ans_rule(25)\} +
\{ans_rule(25)\} + ...
END_TEXT
Context()->normalStrings;


#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

UNORDERED_ANS(
 $ans[0]->cmp(),
 $ans[1]->cmp(),
 $ans[2]->cmp()
);


COMMENT('Answers can be entered in any order.');

ENDDOCUMENT();
