##################################
#  Initialization

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserFunction.pl",
  "unionLists.pl",
  "answerHints.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());


##################################
#  Setup

Context("Numeric")->variables->are(n=>"Real");
parserFunction(f => "sin(pi^n)+e");

$b = random(2,9,1);
do { $m = random(2,5,1); } until ($m != $b);

$f = Formula("$b + $m * n");
$fn = Formula("f(n-1) + $m");

@seq = ("0");
foreach my $n (1..5) {
  $seq[$n] = $f->eval(n=>$n);
}

$printedseq = join(", ",@seq[1..5]);

##################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{ BeginList('OL') \}

$ITEM
Find a recursive definition for the sequence $printedseq,...  
Assume the first term in the sequence is indexed by \( n = 1 \), 
and enter \( f_{n-1} \) as \( f(n-1) \).
$BR
$BR
\( f(1) = \) \{ ans_rule(5) \} and 
\( f(n) \) = \{ ans_rule(20) \} for \( n > 1 \).

$ITEMSEP
$ITEM 
Find a closed formula for the sequence $printedseq,...  Assume the
first term in the sequence is indexed by \( n = 1 \).
$BR
$BR
\( f(n) = \) \{ ans_rule(20) \}

\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;

##################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers=1;

ANS( $seq[1]->cmp() );
ANS( $fn->cmp() );
ANS( $f->cmp()
->withPostFilter(AnswerHints( 
  Formula("$b + $m *(n+1)") => "Is f(1) correct?  Check your indexing.",
))
);

;

ENDDOCUMENT();
