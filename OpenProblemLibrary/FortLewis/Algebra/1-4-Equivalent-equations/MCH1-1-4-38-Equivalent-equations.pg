########################################
#  Initialization

DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");
#Context()->variables->are(r=>"Real");

$a = random(2,8,2);
$b = random(3,9,2);
$c = random(10,20,1);

$equation = "\( \displaystyle \frac{x + $a}{$b} = $c \)";
$answer = Real("$b * $c - $a");

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Solve the equation $equation.
$BR
$BR
\( x = \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("number") \}

END_TEXT
Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());


;
ENDDOCUMENT();
