## Problem1('30')
## KEYWORDS('Equations')


########################################
#  Initialization

DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

#Context("Numeric");
#Context()->variables->are(r=>"Real");

$a = random(3,6,1);
$b = $a + random(1,2,1);
$c = $a + $b;
$d = random(7,9,1);

$equation1 = "\( \displaystyle $a x = $c x + $d \)";

$equation2 = "\( \displaystyle $b x = $d \)";

$mc = new_multiple_choice();
$mc->qa(
"Are the two equations equivalent?  
$BCENTER
$equation1
$BR
$BR
$equation2
$ECENTER 
If they are equivalent, what operation transforms 
the first into the second?", 
"The equations are not equivalent",
);
$mc->extra(
"Subtract \( $c x \) from both sides",
"Add \( $b x \) to both sides",
"Subtract \( $a x \) from both sides",
"Subtract \( $d \) from both sides",
);
$mc->makeLast("The equations are not equivalent");

#Context()->operators->undefine("+","-","*","^","**","/");
#Context()->functions->disable("All");

################################################
#  Main text

#Context()->texStrings;
BEGIN_TEXT

\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}

END_TEXT
#Context()->normalStrings;

################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $mc->correct_ans() ) );


;
ENDDOCUMENT();
