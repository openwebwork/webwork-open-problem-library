########################################
#  Initialization

DOCUMENT();   

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl",
"AnswerFormatHelp.pl",
"weightedGrader.pl",
"PGcourse.pl",    
);     

install_weighted_grader();

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric")->variables->are(r=>"Real");

$a = random(10,19,1);
$b = random(3,8,1);

$answer = Real("-($a + $b)");

$mc = new_multiple_choice();
$mc->qa(
"What operation on both sides of the equation
\( -$a = $b + r \) isolates the variable on 
one side?", 
"Subtracting \( $b\)"
);
$mc->extra(
"Adding \( $a \)",
"Adding \( $b \)",
"Subtracting \( $a \)",
);


Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

(a)   
\{ $mc->print_q() \}
\{ $mc->print_a() \}
$BR
(b) Give the solution of the equation \( -$a = $b + r \).
$BR
\( r = \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("number") \}

END_TEXT
Context()->normalStrings;

################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

WEIGHTED_ANS(radio_cmp( $mc->correct_ans() ), 10 );

WEIGHTED_ANS($answer->cmp(), 90);


COMMENT('MathObject version');
ENDDOCUMENT();