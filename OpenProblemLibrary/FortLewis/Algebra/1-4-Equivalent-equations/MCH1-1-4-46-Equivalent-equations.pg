########################################
#  Initialization

DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

#######################################
#  Set-up

Context("Fraction");

#Context("Numeric");
#Context()->variables->are(r=>"Real");

$a = random(2,8,2);
$b = random(3,9,2);
$c = random(2,8,2);
$d = random(3,9,2);
while ($a == $c) { $c = random(2,8,2); }
while ($b == $d) { $d = random(3,9,2); }

$equation = "\( $a x + $b = $c x - $d \)";

$num = -($d + $b);
$den = ($a - $c);

$answer = Fraction($num,$den);


################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Solve the equation $equation.
$BR
$BR
\( x = \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("fraction") \}

END_TEXT
Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());


;
ENDDOCUMENT();
