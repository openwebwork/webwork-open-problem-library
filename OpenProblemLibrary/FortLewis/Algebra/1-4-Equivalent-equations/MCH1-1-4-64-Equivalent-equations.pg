## Algebraic equations
## ENDDESCRIPTION


## BookTitle('Algebra: Form and Function')
## BookChapter('The Key Concepts of Algebra')
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Isolating variables)
## Date(01/01/10)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## Level(2)
## MO(1)
## TitleText1('Algebra: Form and Function')
## AuthorText1('McCallum, Connally, and Hughes-Hallett')
## EditionText1('1')
## Section1('1.4')
## Problem1('64')
## KEYWORDS('Equations')


########################################
#  Initialization

DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "AnswerFormatHelp.pl",
  "weightedGrader.pl",
  "PGcourse.pl"
);

install_weighted_grader();

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric")->variables->are(s=>"Real");

$a = random(5,9,2);
$b = random(4,8,2);

$equation = "\( \displaystyle -$a = \frac{1}{$b} s \)";

$answer = Real("-($a * $b)");

$mc = new_checkbox_multiple_choice();
$mc->qa(
"What operation on both sides of the equation
$equation isolates the variable on one side?  
There may be more than one correct answer.", 
"Multiplying both sides by \( $b \)",
);
$mc->extra(
"Subtracting \( $b \) from both sides",
"Adding \( $a \) to both sides",
"Dividing both sides by \( $a \)",
);


Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

(a)   
\{ $mc->print_q() \}
\{ $mc->print_a() \}
$BR
(b) Give the solution of the equation $equation.
$BR
\( s = \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("number") \}

END_TEXT
Context()->normalStrings;

################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

WEIGHTED_ANS(checkbox_cmp( $mc->correct_ans() ), 10 );

WEIGHTED_ANS($answer->cmp(), 90);


;
ENDDOCUMENT();
