########################################
#  Initialization

DOCUMENT();   

loadMacros(
"PGstandard.pl",
#"MathObjects.pl",
"PGchoicemacros.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",    
);     

TEXT(beginproblem());

#######################################
#  Set-up

#Context("Numeric");
#Context()->variables->are(r=>"Real");

$a = random(3,7,1);
$aa = $a * $a;
$b = $a + 1;
$ab = $a * $b;

$equation1 = "\( \displaystyle \frac{x}{$a} - \frac{$a}{$b} = 0 \)";

$equation2 = "\( $b x - $aa = 0 \)";

$mc = new_multiple_choice();
$mc->qa(
"Is the second equation the result of a
valid operation on the first equation?
$BCENTER
$equation1
$BR
$BR
$equation2
$ECENTER 
If so, what is the operation?", 
"Multiply both sides by \( $ab \)",
);
$mc->extra(
"Multiply both sides by \( $b \)",
"Multiply both sides by \( $aa \)",
"Subtract \( $b \) from both sides",
"Subtract \( $a \) from both sides",
);
$mc->makeLast("There is no valid operation that transforms the first equation into the second equation");

#Context()->operators->undefine("+","-","*","^","**","/");
#Context()->functions->disable("All");

################################################
#  Main text

#Context()->texStrings;
BEGIN_TEXT

\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}

END_TEXT
#Context()->normalStrings;

################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $mc->correct_ans() ) );


COMMENT('MathObject version');
ENDDOCUMENT();
