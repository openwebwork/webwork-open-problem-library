##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(2,5,1);
$n = random(3,7,2);


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Identify the exponent and the coefficient in the 
power expression \( \displaystyle \left( \frac{1}{ $a \sqrt{x} } \right)^{$n} \).
$BR
$BR
Exponent = \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
Coefficient = \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS(Compute("-$n/2")->cmp() );
ANS(Compute("1/($a^$n)")->cmp() );


;
ENDDOCUMENT();
