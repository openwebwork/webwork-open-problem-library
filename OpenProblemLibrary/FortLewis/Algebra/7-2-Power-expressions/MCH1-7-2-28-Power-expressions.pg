##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,9,1);
$n = random(3,7,1);

$select = random(0,1,1);

if ($select == 0) {

$expr = "(x^{$n} + $a x^{$n})^2";
$k = Compute("($a+1)^2");
$p = Compute("2*$n");

} else {

$expr = "(x^{$n} + $a x)^2";
$k = Compute("NONE");
$p = Compute("NONE");

}


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Can the expression \( \displaystyle $expr \) be written in the 
form \( y = k x^p \)?  If it can, enter the values
for \( k \) and \( p \).  If it cannot, enter 
${BITALIC}NONE${EITALIC} in both answer blanks.
$BR
$BR
\( k \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
\( p \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($k->cmp() );
ANS($p->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();