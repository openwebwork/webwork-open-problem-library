####################################
#  Initialization

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Numeric")->variables->are(x=>"Real",y=>"Real");

$a = random(2,8,2);
$b = random(3,9,2);
do { $c = random(2,8,2); } until ($c != $a);


######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( \displaystyle f(x) = $a \left( x + \frac{$b}{$c} \right) \) and 
\( g(y) \) is inverse to \( f(x) \).
$BR
$BR
(a) Find the composition
\( g(f(x)) = \) 
\{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}
$BR
$BR
(b) Find the composition
\( f(g(y)) = \) \{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \} 
$BR
$BR
(c) A formula for \( x = g(y) \) is 
\{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \} 
END_TEXT
Context()->normalStrings;


######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


ANS( Compute("x")->cmp() );
ANS( Compute("y")->cmp() );

ANS( Compute("y/$a - $b/$c")->cmp() 
->withPostFilter(AnswerHints( 
  Formula("x/$a - $b/$c") => "Hint: g is a function of the variable y, not x",
))
);

;

ENDDOCUMENT();
