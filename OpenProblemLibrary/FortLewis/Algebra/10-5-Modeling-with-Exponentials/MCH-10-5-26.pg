DOCUMENT();  

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##################################
#  Setup

Context("Numeric");
Context()->variables->are(t=>"Real");

$x1 = random(3,7,1);
$r1 = random(5,9,1);
$x2 = $x1+$r1;
$b1 = random(3,5,1);
$y1 = random(700,1300,50);
$y2 = $b1*$y1;
$f = Formula("$y1/(($y2/$y1)**($x1/$r1))*($y2/$y1)**(t/$r1)");

#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
An investment is worth \( V =\) $\($y1\) in year \(t = $x1\) and \(V =\) $\($y2\) in year \(t = $x2\). Find a formula for \(V = f(t)\), assuming the value of the investment grows exponentially.
$BR
$BR
\( V = f(t) = \) \{ ans_rule(20) \}
\{ AnswerFormatHelp("formula") \}
$BR
$BR


END_TEXT
Context()->normalStrings;


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($f->cmp() );

;
ENDDOCUMENT();
