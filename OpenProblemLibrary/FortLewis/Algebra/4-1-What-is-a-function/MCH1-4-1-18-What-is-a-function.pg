##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextLimitedPolynomial.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("LimitedPolynomial-Strict");
Context()->variables->are(t=>"Real",n=>"Real");

$a = random(10,20,1);
$b = random(2,5,1);
$c = random(2,5,1);
while ($b == $c) { $c = random(2,5,1); }

$d = $a - $b * $c;

$h = Formula("$a - $b t");

$answer = Compute("$d + $b n");

Context()->functions->disable("All");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the function \( \displaystyle h(t) = $h \) 
for \( t = $c - n \) without using a calculator.  
Simplify your answer as much as possible.
$BR
$BR
\( h($c - n) = \) \{ans_rule(20)\} 
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;


##################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp()
->withPostFilter(AnswerHints( 
  Compute("$d + $b t") => "Are you using the correct variable?",
#  Compute("$d + $b n") => "Good work!", 
))
);


;
ENDDOCUMENT();
