  $T[$i] = "$SPACE$t[$i]$SPACE";
  $H[$i] = "$SPACE$h[$i]$SPACE";
}

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose a function \( h \) is given by the 
following table of values.
$BCENTER
