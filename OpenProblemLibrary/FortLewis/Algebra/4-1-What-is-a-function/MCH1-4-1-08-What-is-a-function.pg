##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextLimitedPolynomial.pl",
  "alignedChoice.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("LimitedPolynomial-Strict")->variables->are(x=>"Real",a=>"Real");

$p[2] = random(2,3,1);
foreach $i (0..1) {
$p[$i] = random(2,8,1);
}

$a = random(2,5,2);
$c = random(2,4,1);
$d = random(-5,-2,1);

$cc = $c * $c;

$q[2] = $p[2] * $cc;
$q[1] = $p[1] * $c;
#$q[0] = $p[0];

$fx = Formula("$p[2] x^2 + $p[1] x + $p[0]");
$fa = Formula("$p[2] a^2 + $p[1] a + $p[0]");
$fc = Formula("$q[2] a^2 + $q[1] a + $p[0]")->reduce; 

$answera = $fx->eval(x=>$a)->reduce;
$answerb = $fa;
$answerc = $fc;
$answerd = $fx->eval(x=>"$d")->reduce;

#Context()->operators->undefine("+","-","*","^","**","/");
#Context()->functions->disable("All");

$al = new_aligned_list(ans_rule_len=>30, numbered=>0, tex_spacing=>"3pt");

$al->qa(
"\(f($a)\) ",   $answera->cmp,
"\(f(a)\) ",    $answerb->cmp()->withPostFilter(AnswerHints($fx => "Are you using the correct variable name?")),
"\(f($c a)\) ", $answerc->cmp,
"\(f($d)\) ",   $answerd->cmp,
);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( \displaystyle f(x) = $fx \).  
Evaluate the following without using a 
calculator, and simplify your answers 
as much as possible.
\{ AnswerFormatHelp("formulas") \}
\{ $al->print_q() \}
END_TEXT
Context()->normalStrings;


##################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);


;
ENDDOCUMENT();
