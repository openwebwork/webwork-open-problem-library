##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,5,1);
$b = random(3,6,1); 
$c = random(5,9,1);

$ccpb = $c*$c + $b;

$eqn = "(x + $a)^2 + $b = $ccpb";
$var = "x";

$answer = List( Compute("$c-$a"), Compute("-$c-$a") );


##############################################
#  Main text

BEGIN_TEXT
Solve the equation \( $eqn \).  If there is more than one 
correct answer, enter your answers as a comma separated list.
$BR
$BR
\( $var \) = \{ ans_rule(30) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


;
ENDDOCUMENT();
