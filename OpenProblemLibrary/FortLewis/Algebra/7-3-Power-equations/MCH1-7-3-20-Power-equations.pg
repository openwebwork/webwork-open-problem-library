##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(7,9,2);
$b = random(3,5,2);
$c = random(3,6,1);

$eqn = "$a \sqrt{x} - $b \sqrt{x} = \frac{2}{$c} x";
$var = "x";

$answer = List( Compute("($c * ($a-$b)/2)^2"), Compute("0") );


##############################################
#  Main text

BEGIN_TEXT
Solve the equation \( \displaystyle $eqn \).  If there is more than one 
correct answer, enter your answers as a comma separated list.
$BR
$BR
\( $var \) = \{ ans_rule(30) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


;
ENDDOCUMENT();
