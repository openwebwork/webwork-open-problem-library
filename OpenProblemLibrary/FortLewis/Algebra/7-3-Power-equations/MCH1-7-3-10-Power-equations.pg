##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,5,1);
$b = random(3,6,1); 
$c = random(5,9,1);

$eqn = "\sqrt{$a y - $b} = $c";
$var = "y";

$answer = List( Compute("($c^2+$b)/$a") );


##############################################
#  Main text

BEGIN_TEXT
Solve the equation \( $eqn \).  If there is more than one 
correct answer, enter your answers as a comma separated list.
$BR
$BR
\( $var \) = \{ ans_rule(30) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();