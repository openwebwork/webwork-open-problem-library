##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
Context()->{error}{msg}{"Can't raise a negative number to a non-integer power"} 
= "Enter -(a^n) instead of (-a)^n";

$a = random(2,5,1);
$b = random(6,9,1);

$eqn = "$a w^3 + $b = 0";
$var = "w";

$answer = List( Compute("-($b/$a)^(1/3)") );



##############################################
#  Main text

BEGIN_TEXT
Solve the equation \( $eqn \).  If there is more than one 
correct answer, enter your answers as a comma separated list.
$BR
$BR
\( $var \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();