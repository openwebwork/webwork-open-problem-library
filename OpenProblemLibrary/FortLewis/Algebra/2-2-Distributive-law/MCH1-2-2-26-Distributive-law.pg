########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

$mc = new_checkbox_multiple_choice();
$mc->qa(
"Which of the following expressions are
equivalent to \( (x+y)^2 \)?  
There may be more than one correct answer.", 
"\( (x+y)(x+y) \) $BR",
"\( x(x+y) + y(x+y) \) $BR",
"\( (y+x)^2 \) $BR",
);
$mc->extra(
"\( x^2 + y^2 \) $BR",
"\( (x-y)^2 \) $BR",
);

################################################
#  Main text

BEGIN_TEXT

\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}

END_TEXT


################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp( $mc->correct_ans() ) );

ENDDOCUMENT();
