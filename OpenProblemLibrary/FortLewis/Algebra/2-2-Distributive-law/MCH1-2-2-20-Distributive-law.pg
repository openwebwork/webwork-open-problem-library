########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

$a = random(2,9,1);
$b = random(2,9,1);
while ($a == $b) { $b = random(2,9,1); }
$ab = $a * $b;

$mc = new_checkbox_multiple_choice();
$mc->qa(
"Which of the following expressions are
equivalent to \( - $a (x - $b) \)?  
There may be more than one correct answer.", 
"\( -$a x + $ab \) $BR",
"\( $ab - $a x \) $BR",
"\( $a ($b - x) \) $BR",
);
$mc->extra(
"\( - $a x - $b\) $BR",
"\( - $a x + $b \) $BR",
);

################################################
#  Main text

BEGIN_TEXT

\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}

END_TEXT


################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp( $mc->correct_ans() ) );

ENDDOCUMENT();
