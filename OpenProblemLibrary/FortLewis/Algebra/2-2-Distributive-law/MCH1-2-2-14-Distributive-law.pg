########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");

$a = random(4,9,1);
$b = random(4,9,1);
$c = random(2,3,1);

$ac = $a * $c;
$bc = $b * $c;

$fac1 = Formula("$c");
$fac2 = Formula("$a*x**2 + $b*x + 1");

$expression = "\( $ac x^2 + $bc x + $c \)";


################################################
#  Main text

BEGIN_TEXT

Rewrite the expression $expression by taking 
out the greatest common factor and putting it
in front.
$BR
$BR
\{ ans_rule(5) \}
\( \big( \)
\{ ans_rule(15) \}
\( \big) \)
\{ AnswerFormatHelp("formula") \}

END_TEXT


################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($fac1->cmp());
ANS($fac2->cmp());

;
ENDDOCUMENT();
