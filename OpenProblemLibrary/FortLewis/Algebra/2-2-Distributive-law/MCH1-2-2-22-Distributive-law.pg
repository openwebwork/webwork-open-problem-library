########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

$c = random(2,9,1);

$mc = new_checkbox_multiple_choice();
$mc->qa(
"Which of the following expressions are
equivalent to \( a^2 b + $c ab^2 + ab \)?  
There may be more than one correct answer.", 
"\( ab(a + $c b + 1) \) $BR",
"\( a(ab + $c b^2 + b) \) $BR",
);
$mc->extra(
"\( ab(a + $c b) \) $BR",
"\( $c ab(a + b + 1) \) $BR",
"\( $c a^4 b^4 \) $BR",
);

################################################
#  Main text

BEGIN_TEXT

\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}

END_TEXT


################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp( $mc->correct_ans() ) );

ENDDOCUMENT();
