###################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextInequalities.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Inequalities");
Context()->variables->are(t=>"Real");

$m = random(2000,4000,100);
$b = random(15000,25000,1000);

$domain = Compute("0 <= t <= $b/$m");


######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
The value, \( V \), of a car that is \( t \) 
years old is given by \( V = f(t) = $b - $m t \).
Find the domain and range of \( f(t) \).
$BR
$BR
Domain: \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
$BR
END_TEXT

$showPartialCorrectAnswers = 1;

ANS($domain->cmp());


Context("Inequalities");
Context()->variables->are(V=>"Real");

$range  = Compute("0 <= V <= $b");

BEGIN_TEXT
Range: $SPACE \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

ANS($range->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();