####################################
#  Initialization

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextInequalities.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Inequalities");
Context()->variables->are(x=>"Real");

$a = random(3,9,1);

$f = Formula("x^2 - $a");

$domain = Compute("-infinity < x < infinity");

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Find the domain and range of the function 
\( y = f(x) = $f \).
$BR
$BR
Domain: \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
END_TEXT

$showPartialCorrectAnswers = 1;

ANS($domain->cmp());

Context("Inequalities");
Context()->variables->are(y=>"Real");

$range  = Compute("y >= -$a");

BEGIN_TEXT
$BR
Range: $SPACE \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}

END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

ANS($range->cmp());


;
ENDDOCUMENT();
