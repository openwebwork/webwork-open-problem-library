###################################
#  Initialization

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextInequalities.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Inequalities");
Context()->variables->are(t=>"Real");

$a = random(50,250,10);
$b = random(1,2,1);

$domain = Compute("0 <= t <= 12");



######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

A restaurant is open from $b pm to $b am on 
Saturday and a maximum of $a people are allowed 
inside.  If \( f(t) \) is the number of
people in the restaurant \( t \) hours 
after $b pm on Saturday, what is a reasonable
domain and range for \( y = f(t) \)?
$BR
$BR
Domain: \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
$BR
END_TEXT

$showPartialCorrectAnswers = 1;

ANS($domain->cmp());

Context("Inequalities");
Context()->variables->are(y=>"Real");

$range  = Compute("0 <= y <= $a");

BEGIN_TEXT
Range: $SPACE \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}

END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

ANS($range->cmp());


;
ENDDOCUMENT();
