DOCUMENT();  

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##################################
#  Setup

Context("Numeric");
Context()->variables->are(t=>"Real");
Context()->flags->set(useBaseTenLog=>1); 
Context()->flags->set( tolerance => 0.01, tolType => "absolute");

$b = random(2,5,1);
$ans = Compute("10^(1/$b)");



#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the following equation for \(x\):
$BR
$BR
\( \log(x) = \frac{1}{$b} \)
$BR
$BR
\(x = \) \{ ans_rule(20)\}
\{ AnswerFormatHelp("number") \}
END_TEXT
Context()->normalStrings;


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $ans->cmp() );



COMMENT('Uses log = log10.');
ENDDOCUMENT();
