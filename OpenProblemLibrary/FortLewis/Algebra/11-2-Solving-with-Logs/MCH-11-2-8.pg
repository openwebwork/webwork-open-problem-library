#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the following equation for \(x\):
$BR
$BR
\($b^{x} = $Q\)
$BR
$BR
\(x = \) \{ ans_rule(20)\}
\{ AnswerFormatHelp("number") \}
END_TEXT
Context()->normalStrings;


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute("log($Q)/log($b)")->cmp() );



