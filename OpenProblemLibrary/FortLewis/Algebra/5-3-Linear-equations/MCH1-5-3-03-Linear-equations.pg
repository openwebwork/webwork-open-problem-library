##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Fraction-NoDecimals");
Context()->variables->are(t=>"Real",y=>"Real");

$a = list_random(2,3,5,7,8);
$b = random(3,9,2);
$c = random(3,9,2);

$t = random(5,12,1);
$num1 = $a * $t + $b;
$den1 = $c;
$answer1 = Compute("$num1 / $den1");

$y = random(2,5,1);
$num2 = $c * $y - $b;
$den2 = $a;
$answer2 = Compute("$num2 / $den2");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( \displaystyle f(t) = \frac{$a t + $b}{$c} \).
$BR
$BR
(a) Evaluate \( f($t) \).
$BR
\( f($t) \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("fractions") \}
$BR
$BR
(b) Solve \( f(t) = $y \). 
$BR
\( t \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

ANS($answer1->cmp() );
ANS($answer2->cmp() );


;
ENDDOCUMENT();
