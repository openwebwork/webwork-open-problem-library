##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Fraction-NoDecimals");
#Context()->variables->are(t=>"Real",y=>"Real");

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);

$num = $a + $b * $c;
$den = $a + $c;

$answer = Compute("$num / $den");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle \frac{$a}{x-$b} - \frac{$c}{1-x} = 0 \).
$BR
$BR
\( x \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

ANS($answer->cmp() );


;
