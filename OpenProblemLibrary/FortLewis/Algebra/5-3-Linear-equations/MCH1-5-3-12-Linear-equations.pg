##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Fraction-NoDecimals");
#Context()->variables->are(t=>"Real",y=>"Real");

$a = random(2,9,1);
$b = random(2,8,2);
$c = random(3,9,2);
$d = random(1,9,1);

$num = $c * $d + $b;
$den = $a * $c + $b;

$answer = Compute("$num / $den");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle $a t + \frac{ $b(t-1) }{ $c } = $d \).
$BR
$BR
\( t \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

ANS($answer->cmp() );


COMMENT('MathObject version');
