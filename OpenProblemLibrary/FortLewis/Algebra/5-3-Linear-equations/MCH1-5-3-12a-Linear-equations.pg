##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Numeric")->variables->are(t=>'Real');

$a = random(2,9,1);
$b = random(2,8,2);
do { $c = random(3,9,2); } until ($c != $a);
do { $d = random(1,9,1); } until ($d != $c);

$num = $c * $d + $b;
$den = $a * $c + $b;

$answer = Compute("$num / $den");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Multiplying both sides of the equation 
\( \displaystyle $a t + \frac{ $b(t-1) }{ $c } = $d \)
by 
\{ ans_rule(10) \}, 
we can clear the denominator and obtain the equation
$BR
$BR
\{ ans_rule(20) \} = \{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}
$BR
$BR
This equation can be solved for
$BR
$BR
\( t \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

ANS( Compute("$c")->cmp() );

ANS( Compute("$a * $c t + $b(t-1)")->cmp() );
ANS( Compute("$c * $d")->cmp() );

ANS( $answer->cmp() );

ENDDOCUMENT();  
