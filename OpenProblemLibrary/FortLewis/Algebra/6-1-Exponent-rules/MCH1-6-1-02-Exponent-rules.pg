##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextFraction.pl",
  "answerHints.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,9,1);

$b = list_random(2,4,5);

$c1 = random(3,7,2);
$c2 = random(2,3,1);
$c2c2 = $c2 * $c2;

Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>20, numbered=>0, tex_spacing=>"5pt");
$al->qa(
"\(-$a^2\)", Real("-($a^2)")->cmp()->withPostFilter(AnswerHints(Real("$a^2")=>"Is -1 being squared?")),
"\($b^1 \cdot 1^7 \cdot 3^2\)", Real("9*$b")->cmp(),
"\(\displaystyle \frac{-1^{$c1} \cdot (-$c2)^4}{${c2c2}^2} \)", Real("-1")->cmp(),
);
Context()->normalStrings;

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the following expressions without using
a calculator.  Simplify your answers as much
as possible.  
\{ AnswerFormatHelp("numbers") \}
$BR
\{ $al->print_q() \}
END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($al->correct_ans );


;
ENDDOCUMENT();
