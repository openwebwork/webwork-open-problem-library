##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextLimitedPolynomial.pl",
"alignedChoice.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("LimitedPolynomial-Strict");

$a = random(2,3,1);
$b = random(4,5,1);
$c = random(6,7,1);

$e2 = ($c - $a) * $b;


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write the following expression in the form
\( x^n \), assuming \( x \not= 0 \).  
Simplify your answer as much as possible.  
$BR
$BR
\( \displaystyle \left( \frac{x^{$c}}{x^{$a}} \right)^{$b} \) =
\{ ans_rule(10) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS(Formula("x^($e2)")->cmp() );


COMMENT('MathObject version');
