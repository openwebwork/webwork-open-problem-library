##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
#"answerHints.pl",
"alignedChoice.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

#Context("Numeric")->variables->remove('x');
Context("Fraction-NoDecimals");

$x = 2; #random(2,3,1);
$y = random(-4,-2,1);
$z = random(-5,-3,1);
if ($y == $z) { $z = -5; }

$ansa = ($y)**($x);
$ansbnum = ($y)**($x);
$ansbden = ($z)**($x);

$anscden = ($x)**(abs($z));

Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>20, numbered=>0, tex_spacing=>"5pt");
$al->qa(
"\(y^x\)", Real("$ansa")->cmp(),
"\(\displaystyle \left( \frac{y}{z} \right)^x \)", Compute("$ansbnum/$ansbden")->cmp(),
"\( x^{-z} \)", Compute("$anscden")->cmp(),
);
Context()->normalStrings;

Context()->operators->undefine("+","-","*","^","**");
Context()->functions->disable("All");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the following expressions for \( x = $x \),
\( y = $y \), and \( z = $z \) without using
a calculator.  Simplify your answers as much
as possible, and enter your answers as fractions.  
\{ AnswerFormatHelp("fractions") \}
$BR
\{ $al->print_q() \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($al->correct_ans );


COMMENT('MathObject version');
ENDDOCUMENT();