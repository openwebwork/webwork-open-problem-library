##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextLimitedPolynomial.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("LimitedPolynomial-Strict");

$a = random(2,3,1);
$b = random(4,5,1);
$c = random(6,7,1);
$d = random(8,9,1);

$e1 = $d + $c - $b - 1;


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write the following expression in the form
\( x^n \), assuming \( x \not= 0 \).  
Simplify your answer as much as possible.  
$BR
$BR
\( \displaystyle \frac{ x^{$d} }{ x^{$b} } \cdot \frac{ x^{$c} }{ x } \) =
\{ ans_rule(10) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS(Formula("x^($e1)")->cmp() );


;
ENDDOCUMENT();
