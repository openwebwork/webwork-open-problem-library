##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"answerHints.pl",
"alignedChoice.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,5,1);
$c = random(3,7,1);

Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>20, numbered=>0, tex_spacing=>"5pt");
$al->qa(
"\(-$a^3 \cdot -2^2\)", Real("4*$a^3")->cmp()->withPostFilter(AnswerHints(Real("-4*$a^3")=>"Is -1 being squared or cubed?")),
"\(\displaystyle\left(\frac{-4^3}{-2^3}\right)^2\)", Real("64")->cmp(),
"\($c^0\)", Real("1")->cmp(),
"\(0^{$c}\)", Real("0")->cmp(),
);
Context()->normalStrings;

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the following expressions without using
a calculator.  Simplify your answers as much
as possible.  
\{ AnswerFormatHelp("numbers") \}
$BR
\{ $al->print_q() \}
END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation



$showPartialCorrectAnswers = 1;

ANS($al->correct_ans );


COMMENT('MathObject version');
