##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"unionTables.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric")->variables->are(x=>"Real",y=>"Real");

$a = random(2,9,1);

# TeX
$expression = "(x^2+y)^{$a} (x+y^2)^{$a}";

$base = Formula("(x^2+y)*(x+y^2)");
$exponent = Formula("$a");


#
#  Display exponents nicely
#
$w1 = 20; # width of 1st answer blank
$w2 = 10; # width of 2nd answer blank

Context()->texStrings;
if ($displayMode eq 'TeX') {
  $showpower =
  "\( \displaystyle $expression = (" . ans_rule($w1) . ")^{" . ans_rule($w2) . "}\)";
} else {
  $showpower =
  ColumnTable(
  "\( \displaystyle $expression = \Big( \) " . ans_rule($w1) . " \( \Big) \)",
  ans_rule($w2).$BR.$BR,
  indent => 0, separation => 0, valign => "BOTTOM"
  );
}
Context()->normalStrings;


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Rewrite the following using a single exponent.
\{ AnswerFormatHelp("formulas") \}
$BR
$BR
$showpower
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($base->cmp() );
ANS($exponent->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();
