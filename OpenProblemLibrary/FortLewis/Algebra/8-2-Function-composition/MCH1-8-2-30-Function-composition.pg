####################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Numeric");

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);
$d = random(2,9,1);

$f = Formula("$a x^$d");


######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
If \( f(g(x)) = $a(x^{$b}+$c)^{$d} \) and
\( g(x) = x^{$b}+$c \), find \( f(x) \).
$BR
$BR
\( f(x) \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($f->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();