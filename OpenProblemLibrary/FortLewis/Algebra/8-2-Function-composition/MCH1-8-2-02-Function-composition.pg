####################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"parserAssignment.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Numeric");
Context()->variables->add(y=>"Real",u=>"Real");
parser::Assignment->Allow;

$a = random(2,6,1);
$c = random(2,6,1);
$d = random(1,5,1);

$c2 = $a * $c * $c;
$c1 = -2 * $a * $c * $d;
$c0 = $a * $d**2; 

$f = Formula("y = $c2 x^2 + $c1 x + $c0");


######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Use substitution to compose \( y = $a u^{2} \) 
and \( u = $c x - $d \).  Enter your answer as an
equation, and simplify your answer as much as 
possible.
$BR
$BR
\{ ans_rule(30) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($f->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();