####################################
#  Initialization

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Numeric");
Context()->variables->are(x=>"Real",y=>"Real",u=>"Real");

$a = random(2,9,1);
$b = random(2,9,1);

$k = Real(1);
$p = Real(1/2);
$h = Formula("$a - x^$b");

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write the function \( y = \sqrt{$a - x^{$b}} \) 
in the form \( y = k \cdot (h(x))^p \) for some
function \( h(x) \) and some constants \( k \) 
and \( p \).
$BR
$BR
\( k \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
\( p \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
\( h(x) \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($k->cmp() );
ANS($p->cmp() );
ANS($h->cmp() );


;
ENDDOCUMENT();
