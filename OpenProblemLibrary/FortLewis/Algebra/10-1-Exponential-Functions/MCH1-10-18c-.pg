  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##################################
#  Setup

Context("Numeric");
Context()->variables->are(n=>"Real");

$a = random(100,200,5);
$q = random(2,5,1);
$b = 1 - 1/$q;
$f = Formula("$a * ($b)**n");


#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
The area covered by a marsh, \(A\), starts at \($a\) 
acres and drops by a factor of \(\dfrac{1}{$q}\) 
each year for \(n\) years.  Write a formula for 
\(A = f(n)\).
$BR
$BR
\( A = f(n)=\)\{ ans_rule(20) \}
\{ AnswerFormatHelp("formula") \}
END_TEXT
Context()->normalStrings;


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($f->cmp() );

;
