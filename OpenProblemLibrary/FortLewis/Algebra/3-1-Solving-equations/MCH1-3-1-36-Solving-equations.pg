##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###################################
# Setup

Context("Numeric");

$a = random(6,9,1);
$b = random(2,9,1);
$c = random(2,4,1);
$d = random(2,9,1);

$dpb = $d + $b;
$amc = $a - $c;

$var = "w";
$eqn = "$a w - $b x = $c w + $d x";

$answer = Formula("$dpb x / $amc");


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle $eqn \) for \( $var \).
$BR
$BR
\( $var = \)
\{ ans_rule(20) \}
\{ AnswerFormatHelp("formula") \}

END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();
