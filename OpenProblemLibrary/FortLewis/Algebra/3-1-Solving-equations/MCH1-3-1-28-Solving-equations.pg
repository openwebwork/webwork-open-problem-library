##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###################################
# Setup

Context("Numeric");
Context()->variables->are(t=>"Real",r=>"Real",k=>"Real");
Context()->variables->set(k=>{limits=>[1,3]});

$a = random(2,9,1);

$var = "w";
$eqn = "t = r + \frac{k}{$a} w";

$answer = Formula("$a*(t-r)/k");


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle $eqn \) for \( $var \).
$BR
$BR
\( $var = \)
\{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}

END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


;
ENDDOCUMENT();
