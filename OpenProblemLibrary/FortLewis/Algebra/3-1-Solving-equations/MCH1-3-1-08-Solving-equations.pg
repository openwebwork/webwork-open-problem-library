##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###################################
# Setup

Context("Fraction-NoDecimals");

$a = random(2,5,1);
$b = random(6,9,1);
$c = random(6,9,1);
$d = random(2,5,1);

$adec = $a/10;
$cdec = $c/10;

$var = "g";
$eqn = "$adec (g - $b) = $cdec (g - $d)";

$num = -($a*$b - $c*$d);
$den = $c - $a;

$answer = Fraction($num,$den);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle $eqn \).
$BR
$BR
\( $var = \)
\{ ans_rule(20) \}
\{ AnswerFormatHelp("fraction") \}

END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


;
ENDDOCUMENT();
