########################################
#  Initialization

DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");

$a = random(3,6,1);
$aa = $a * $a;

$select = random(-1,1,2);

$b = $a + $select;
$bb = $b * $b;

if ($select == -1) { 
  $answer = "No"; 
} else { 
  $answer = "Yes"; 
}

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Is \( x = $b \) a solution to the equation
\( x + $a = x^2 - $aa \)? 
\{ pop_up_list(["?","Yes","No"]) \}


END_TEXT

Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS(str_cmp($answer));


;
ENDDOCUMENT();
