########################################
#  Initialization

DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");

$b = random(3,6,1);

$a = random(-1,1,1);

if ($a == 0) { 
  $answer = "Yes"; 
} else { 
  $answer = "No"; 
}

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Is \( x = $a \) a solution to the equation
\( \displaystyle \frac{$b + x}{$b - x} = 1 \)? 
\{ pop_up_list(["?","Yes","No"]) \}


END_TEXT

Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS(str_cmp($answer));


;
ENDDOCUMENT();
