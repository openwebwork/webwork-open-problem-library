########################################
#  Initialization

DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");

$a = random(3,5,1);
$aa = $a * $a;

$select = random(0,1,1);

if ($select == 0) {
  $c = $a;
  $answer = "No";
} else {
  $c = 2*$aa - $a;
  $answer = "Yes";
}

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Is \( t = $a \) a solution to the equation
\( t + $c = t^2 + $aa \)? 
\{ pop_up_list(["?","Yes","No"]) \}


END_TEXT

Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS(str_cmp($answer));


;
ENDDOCUMENT();
