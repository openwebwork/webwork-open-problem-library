DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");

$a = random(3,7,1);
$b = random(8,11,1);

$answer = Real("$a * $b");

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Solve the equation \( \displaystyle \frac{T}{$a} = $b \).
$BR
$BR
\( T = \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("number") \}

END_TEXT
Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS($answer->cmp());


;
