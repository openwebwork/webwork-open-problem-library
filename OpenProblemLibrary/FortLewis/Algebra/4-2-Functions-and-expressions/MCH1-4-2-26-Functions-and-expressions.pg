$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Numeric");
Context()->variables->are(t=>"Real",n=>"Real");

$a = random(1,9,1);

$answer = Formula("n+$a");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Put the function \( Q = t(n+$a) \) in the form
\( Q = k t \) and state the value of \( k \).  
$BR
$BR
\( k \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;

ANS($answer->cmp() );


;
