##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Fraction-NoDecimals");

$a = random(1,5,2);
$b = random(2,6,2);
$c = random(3,5,2);
$d = 1;
$e = 2*$c+1;

$num = -($b);
$den = 2 - $a;

$answer = List(Fraction("$num","$den"));

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( \displaystyle h(x) = $a - \frac{$b}{x} \).  Solve \( $c h(x) + $d = $e \) for \( x \).
$BR
$BR
\( x \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

ANS($answer->cmp() );


;
ENDDOCUMENT();
