);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Fraction-NoDecimals");

$a = random(2,8,2);
$b = random(3,7,2);

$num = $a * $b - $a;
$den = $a * $a;

$answer = List(Compute("$num/$den"));

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( f(x) = $a ($a x - $b) + $a \).  Solve \( f(x) = 0 \) for \( x \).
$BR
$BR
\( x \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

ANS($answer->cmp() );


COMMENT('MathObject version');
