##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Fraction-NoDecimals");

$a = random(3,7,2);
$b = random(2,4,2);
$c = random(6,8,2);
$d = random(10,12,2);

$num = $b * ($d - $c);
$den = $a;

$answer = List(Compute("$num/$den"));

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( \displaystyle f(t) = \frac{$a}{$b} t + $c \).  Solve \( f(t) = $d \) for \( t \).
$BR
$BR
\( t \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

ANS($answer->cmp() );


;
ENDDOCUMENT();
