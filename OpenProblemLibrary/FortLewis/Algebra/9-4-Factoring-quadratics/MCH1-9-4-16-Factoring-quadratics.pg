## DESCRIPTION
## Quadratic functions, expressions, and equations
## ENDDESCRIPTION


## BookTitle('Algebra: Form and Function')
## BookChapter('Quadratic Functions, Expressions, and Equations')
## DBsubject(Algebra)
## DBchapter(Quadratic equations and functions)
## DBsection(Solve by factoring)
## Date(01/01/10)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## MLT(quadraticFactorThenSolve)
## Level(2)
## MO(1)
## TitleText1('Algebra: Form and Function')
## AuthorText1('McCallum, Connally, and Hughes-Hallett')
## EditionText1('1')
## Section1('9.4')
## Problem1('16')
## KEYWORDS('quadratic functions')


####################################
#  Initialization

DOCUMENT();  

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextPolynomialFactors.pl",
  "contextLimitedPowers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


####################################
#  Setup

Context("PolynomialFactors-Strict");

LimitedPowers::OnlyIntegers(
minPower => 0, maxPower => 1,
message => "either 0 or 1",
);

$a = random(2,7,1);
$b = random(2,7,1);
while ($a == $b) { $b = random(2,7,1); }

$eqn = "$a x^2 + $b x = 0";

$factored = Compute("x($a x + $b)");

$ans1 = Compute("0");
$ans2 = Compute("-$b/$a");

####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT
(a) Factor the expression \( $a x^2 + $b x \).
$BR
\{ ans_rule(30) \}
\{ AnswerFormatHelp("formulas") \}  
$BR
$BR
(b) Solve the equation \( $eqn \).  If there is 
more than one correct answer, enter your answers 
as a comma separated list.  If there are no 
solutions, enter ${BITALIC}NONE.${EITALIC}
$BR
\( x = \) \{ ans_rule(30) \}
\{ AnswerFormatHelp("numbers") \} 
END_TEXT
Context()->normalStrings;

###################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($factored->cmp() );

ANS(List($ans1,$ans2)->cmp() );


;
ENDDOCUMENT();

