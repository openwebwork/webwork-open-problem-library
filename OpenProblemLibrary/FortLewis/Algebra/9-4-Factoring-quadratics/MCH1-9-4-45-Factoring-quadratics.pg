##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,9,1);
$b = random(2,7,1);
$c = random(2,7,1);
while ($b==$c) { $c=random(2,7,1); }

$bpc = $b + $c;
$bc = $b * $c;

$roots = List(Compute("$a + $b^(1/3)"),Compute("$a + $c^(1/3)"));


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle 
(t-$a)^6 - $bpc (t-$a)^3 + $bc = 0 \).
If there is more than one correct answer, enter your answers
as a comma separated list.  If there are no solutions, enter
${BITALIC}NONE.${EITALIC}
$BR
$BR
\( t \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($roots->cmp() );


;
ENDDOCUMENT();
