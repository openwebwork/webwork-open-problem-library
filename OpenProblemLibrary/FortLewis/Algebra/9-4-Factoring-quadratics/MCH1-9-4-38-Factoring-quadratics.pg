##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,9,1);
$b = 1-$a;

$roots = List(Compute("sqrt($a)"),Compute("-sqrt($a)"));


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( $b x^2 - $a + x^4 = 0 \).
If there is more than one correct answer, enter your answers
as a comma separated list.  If there are no solutions, enter
${BITALIC}NONE.${EITALIC}
$BR
$BR
\( x \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($roots->cmp() );


;
ENDDOCUMENT();
