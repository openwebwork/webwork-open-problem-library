##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(2,6,1);
$aa = $a * $a;
$a2 = 2*$a;

$roots = List(Compute("$a"));


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle 
x + \frac{$aa}{x} = $a2 \).
If there is more than one correct answer, enter your answers
as a comma separated list.  If there are no solutions, enter
${BITALIC}NONE.${EITALIC}
$BR
$BR
\( x \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($roots->cmp() );


;
ENDDOCUMENT();
