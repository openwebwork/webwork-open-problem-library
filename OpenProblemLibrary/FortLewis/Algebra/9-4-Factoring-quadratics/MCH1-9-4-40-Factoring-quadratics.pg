DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,9,1);
$b = 1+$a;

$roots = List(Compute("1"),Compute("$a"));


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle 
\frac{$a}{y} - \frac{$a}{y-$b} - $b = 0 \).
If there is more than one correct answer, enter your answers
as a comma separated list.  If there are no solutions, enter
${BITALIC}NONE.${EITALIC}
$BR
$BR
\( y \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($roots->cmp() );


COMMENT('MathObject version');
