########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");
#Context()->variables->are(a=>"Real",b=>"Real");

$a = random(2,10,2);
$b = random(1,9,2);
$c = random(2,10,1);

$xyz = random(20,30,1);

$answer = Real("$xyz - $a + $b - $c");

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");


################################################
#  Main text

BEGIN_TEXT

If \( x + y + z = $xyz \), find the value of
\(
(y - $a) + (z + $b) + (x - $c).
\)
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("number") \}

END_TEXT


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());


;
ENDDOCUMENT();
