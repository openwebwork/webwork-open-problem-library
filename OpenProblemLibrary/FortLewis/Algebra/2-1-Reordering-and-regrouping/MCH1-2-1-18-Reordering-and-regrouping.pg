########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("LimitedPolynomial-Strict");
Context()->flags->set(singlePowers=>1);
#Context()->variables->are(a=>"Real",b=>"Real");

$a = random(2,9,1);
$b = random(2,9,1);
while ($b == $a) { $b = random(2,9,1); }
$c = random(2,9,1);
while (($c == $a) || ($c == $b)) { $c = random(2,9,1); }

$expression = "\( ($a x)($c x) + ($b x) ($a x) + $c ($b x) + x($b x) \)";

$A = $a * $c + $a * $b + $b;
$B = $c * $b;

$answer = Formula("$A * x**2 + $B * x")->reduce;

################################################
#  Main text

BEGIN_TEXT

Write the expression $expression in a
simpler form, if possible. If it is not possible to simplify, re-write the given expression.
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("formula") \}

END_TEXT


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());


;
ENDDOCUMENT();
