#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");
#Context()->variables->are(a=>"Real",b=>"Real");

$a = random(2,10,2);
$b = 4;
$c = random(2,10,2);
while ($c == $a) { $c = random(2,10,2); }

$xyz = random(20,30,1);

$answer = Real("$xyz * $a * $c / $b");

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");


################################################
#  Main text

BEGIN_TEXT

If \( xyz = $xyz \), find the value of
\(
\displaystyle
\Big( $a z \Big)
\Big( \frac{x}{$b} \Big)
\Big( $c y \Big).
\)
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("number") \}

END_TEXT


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());


;
