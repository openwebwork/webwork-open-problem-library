########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("LimitedPolynomial-Strict");
Context()->flags->set(singlePowers=>1);

$a = random(2,8,2);
$b = random(2,8,2);
$c = random(3,9,2);
$d = random(3,9,2);
$f = random(2,8,2);
$g = random(2,8,2);

$A = $a - $d + $f;
$B = $b + $c - $g;

if ($A == 0) { $a = $a + 1; $A = 1; }
if ($B == 0) { $b = $b - 1; $B = -1; }

$expression = "\( ($a x + $b) + ($c - $d x) + ($f x - $g ) \)";

$answer = Formula("$A*x + $B")->reduce;

################################################
#  Main text

BEGIN_TEXT

Write the expression $expression in a
simpler form, if possible. If it is not possible to simplify, re-write the given expression.
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("formula") \}

END_TEXT


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());


;
ENDDOCUMENT();
