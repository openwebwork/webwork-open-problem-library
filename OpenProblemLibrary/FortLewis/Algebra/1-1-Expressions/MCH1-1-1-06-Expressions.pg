########################################
#  Initialization

DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");
Context()->variables->add(h=>"Real",B=>"Real",b=>"Real");

$h = random(6,12,2);
$B = random(3,8,1);
$b = random(3,8,1);
while ($B == $b) { $b = random(3,8,1); }

$f = Formula("0.5 * $h * ($B + $b)");

$answer = $f->eval(h=>$h,B=>$B,b=>$b);

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate the expression 
\( \displaystyle \frac{1}{2} h \big( B + b \big) \) 
when \( h = $h, \ B = $B, \ b = $b. \)
$BR
$BR
\{ ans_rule(10) \}
\{ AnswerFormatHelp("number") \}

END_TEXT

Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS($answer->cmp());


;
ENDDOCUMENT();
