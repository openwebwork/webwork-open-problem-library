########################################
#  Initialization

DOCUMENT();   

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",    
);     

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");
Context()->variables->are(s=>"Real",c=>"Real");

$cans = random(60,80,5);
$bags = random(10,25,5);

$answer = Formula("$cans * s + $bags * c");

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

A caterer for a party buys $cans cans of soda and
$bags bags of chips.  Write an expression for the
total cost if soda costs \( s \) dollars per can
and chips cost \( c \) dollars per bag.
$BR
$BR
${DOLLAR}
\{ ans_rule(30) \}
\{ AnswerFormatHelp("formula") \}

END_TEXT

Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS($answer->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();