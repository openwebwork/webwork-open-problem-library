########################################
#  Initialization

DOCUMENT();   

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",    
);     

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");
#Context()->variables->add(t=>"Real");

$a = random(1,4,1);
$b = random(2,9,1);
$c = random(-9,-5,1);

while ( abs($a+$c) == 1 ) { $c = random(-9,-5,1); }

$absapc = abs($a + $c);

$f = Formula("((x + $a)**2 / $absapc) - $b");

$answer = $f->eval(x=>$c);

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate the expression 
\( \displaystyle \frac{1}{$absapc} \big( x + $a \big)^2 - $b \) 
when \( x = $c \).
$BR
$BR
\{ ans_rule(10) \}
\{ AnswerFormatHelp("number") \}

END_TEXT

Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS($answer->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();