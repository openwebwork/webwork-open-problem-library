########################################
#  Initialization

DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("Numeric");
Context()->variables->add(t=>"Real");

$t = random(-1,1,2) * random(2,5,1);

$f = Formula("-16*t^2+64*t+128");

$answer = $f->eval(t=>$t);

Context()->operators->undefine("+","-","*","^","**","/");
Context()->functions->disable("All");

################################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate the expression \( $f \) when \(t=$t\).
$BR
$BR
\{ ans_rule(10) \}
\{ AnswerFormatHelp("number") \}

END_TEXT

Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS($answer->cmp());


;
ENDDOCUMENT();
