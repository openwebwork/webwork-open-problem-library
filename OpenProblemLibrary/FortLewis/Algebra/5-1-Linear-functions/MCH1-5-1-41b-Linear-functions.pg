##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Fraction-NoDecimals");

$a = random(2,8,1);
do { $b = random(2,8,1); } until ($b != $a);
do { $c = random(2,8,1); } until (gcd($a,$c) == 1);
$d = random(1,4,1);

$num = $d * $c + $a;

$constant = Compute("$num / $c");
$slope = Compute("$b / $c");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Put the function \( \displaystyle 
f(x) = \frac{$a + $b x}{$c} + $d \) in the form 
\( f(x) = b + m x \).
$BR
$BR
\( f(x) = \) 
\{ ans_rule(10) \} \( + \Big( \) 
\{ ans_rule(10) \} \( \Big) x \). 
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

ANS( $constant->cmp(tolerance=>"0.001",tolType=>"absolute") );
ANS( $slope->cmp(tolerance=>"0.001",tolType=>"absolute") );


ENDDOCUMENT();  