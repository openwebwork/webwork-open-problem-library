##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("Fraction-NoDecimals");

$a = random(15,30,1);
$b = random(2,8,1);
do { $b = random(2,8,1); } until ($b != $a);
$c = random(15,25,1);

$constant = Compute("$a / $c");
$slope = Compute("-$b / $c");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Put the function \( \displaystyle 
f(x) = \frac{$a - $b x}{$c} \) in the form 
\( f(x) = b + m x \).$BR
Your answer must be exact; use 
\{ helpLink("fractions") \},
 not decimals.

$PAR
\( f(x) = \) 
\{ ans_rule(10) \} \( + \Big( \) 
\{ ans_rule(10) \} \( \Big) x \). 
END_TEXT
Context()->normalStrings;

ANS( $constant->cmp(tolerance=>"0.001",tolType=>"absolute") );
ANS( $slope->cmp(tolerance=>"0.001",tolType=>"absolute") );


ENDDOCUMENT();  
