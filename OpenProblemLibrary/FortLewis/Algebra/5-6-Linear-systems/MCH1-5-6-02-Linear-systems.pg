##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Fraction-NoDecimals");
Context()->variables->are(x=>"Real",y=>"Real");

#  [ a b ] [x] = [e]
#  [ c d ] [y]   [f]

$a = list_random(2,3,5);
$b = 1;
$c = 1;
$d = random(2,5,1);
while ($a==$d) { $d = random(2,5,1); }

# make sure it's invertible
#while ($a*$d - $b*$c == 0) {
#  $a = random(2,5,1);
#  $b = 1;
#  $c = 1;
#  $d = random(2,5,1);
#}

$e = list_random(7,11,13,17);
$f = random(10,20,5);
while ($e == $f) { $f = random(10,20,5); }

$xnum = $d * $e - $b * $f;
$ynum = -($c)*$e + $a * $f;
$den = $a * $d - $b * $c;

$x = Compute("$xnum / $den");
$y = Compute("$ynum / $den");

$top = Formula("$a x + $b y")->reduce;
$bot = Formula("$c x + $d y")->reduce;


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the system of equations.
$PAR
$BCENTER
\( \displaystyle
\left\lbrace
\begin{array}{rcl}
$top & = & $e \\
$bot & = & $f  
\end{array}
\right.
\)
$ECENTER
$BR
\( x \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("fractions") \}
$BR
\( y \) = \{ ans_rule(10) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($x->cmp() );
ANS($y->cmp() );


;
ENDDOCUMENT();
