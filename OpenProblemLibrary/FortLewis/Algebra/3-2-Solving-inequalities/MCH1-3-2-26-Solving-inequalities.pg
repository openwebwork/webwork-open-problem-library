##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalities.pl",
  "AnswerFormatHelp.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###################################
# Setup

Context("Inequalities-Only");
Context()->variables->are(x=>"Real");

$a = random(2,9,1);
$b = random(2,9,1);
while ($a==$b) { $b = random(2,9,1); }

$q = Formula("(x-$a)(x+$b)");

$answer = Compute("-$b < x < $a");

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
For what values of \( x \) is the quantity
\( $q \) negative?  Enter your answer as
an inequality.
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}

END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() 
->withPostFilter(AnswerHints(
[Compute("-$b <= x < $a"),Compute("-$b < x <= $a"),Compute("-$b <= x <= $a")] 
=> 
["Check whether your endpoints should be included or excluded",replaceMessage=>1],
))
);


;
ENDDOCUMENT();
