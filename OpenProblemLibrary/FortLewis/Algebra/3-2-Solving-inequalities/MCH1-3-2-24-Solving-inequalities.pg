##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalities.pl",
  "AnswerFormatHelp.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###################################
# Setup

Context("Inequalities-Only");
Context()->variables->are(x=>"Real");

$a = random(-1,1,2) * random(2,9,1);
$q = Formula("x-$a")->reduce;

$select = random(0,1,1);

if ($select == 0) {
  $sign = "negative";
  $answer = Compute("x < $a");
  $incorrect = Compute("x <= $a");
} else {
  $sign = "positive";
  $answer = Compute("x > $a");
  $incorrect = Compute("x >= $a");
}


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
For what values of \( x \) is the quantity
\( $q \) $sign?  Enter your answer as
an inequality.
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}

END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() 
->withPostFilter(AnswerHints(
  $incorrect => ["Is $a - $a = 0 $sign?  Check your type of inequality.",replaceMessage=>1],
))
);


;
ENDDOCUMENT();
