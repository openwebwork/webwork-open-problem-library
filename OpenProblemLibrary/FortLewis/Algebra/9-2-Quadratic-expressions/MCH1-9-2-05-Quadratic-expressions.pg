####################################
#  Initialization

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()); 


####################################
#  Setup

Context("Numeric");

$h = non_zero_random(-2,2,1);
$k = non_zero_random(-5,5,1);
while ($h==$k) { $k = non_zero_random(-5,5,1); }
$yint = random(-1,1,2) * random(2,6,1);
while ($yint==$k) { $yint = random(-1,1,2) * random(2,6,1); }

$p = $yint - $k;
$q = $h * $h;

while ($p == $q || $p == -$q) {

$h = non_zero_random(-2,2,1);
$k = non_zero_random(-5,5,1);
while ($h==$k) { $k = non_zero_random(-5,5,1); }
$yint = random(-1,1,2) * random(2,6,1);

$p = $yint - $k;
$q = $h * $h;

}

$answer = Formula("($p/$q) (x - $h)^2 + $k")->reduce;


######################################
#  Main text

BEGIN_TEXT
Find a formula for the quadratic function
whose graph has vertex \( ($h,$k) \) and
\(y\)-intercept \( $yint \).
$BR
$BR
\( f(x) = \) 
\{ ans_rule(30) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT


######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ENDDOCUMENT();
