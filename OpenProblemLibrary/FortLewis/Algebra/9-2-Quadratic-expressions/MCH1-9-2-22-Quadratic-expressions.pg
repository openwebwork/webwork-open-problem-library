####################################
#  Initialization

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()); 


####################################
#  Setup

Context("LimitedPolynomial-Strict")->variables->are(t=>"Real");

$a = random(2,4,1);
$b = random(2,3,1);
$c = random(5,9,1);

$p[0] = - $a * $c;
$p[1] = $a * ($b * $c - 1);
$p[2] = $a * $b;

$f = Formula("$p[2] t^2 + $p[1] t + $p[0]")->reduce;


######################################
#  Main text

BEGIN_TEXT
Express the quadratic function 
\( f(t) = $a ($b t - 1) (t + $c) \)
in standard form \( a t^2 + b t + c \).
$BR
$BR
\( f(t) \) = \{ ans_rule(30) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT


######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($f->cmp() );


;
ENDDOCUMENT();
