"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 


####################################
#  Setup

Context("Numeric");

$a = random(2,3,1);
if ($a==2) {
 $atext = "twice";
} else {
 $atext = "three times"; 
}

$b = random(2,8,1);

$answer = Formula("x ($a x + $b) / 2");


######################################
#  Main text

BEGIN_TEXT
The height of a right triangle is \( $b \) 
feet more than $atext the length of its
base.  Express the area of the triangle 
as a function of the length of its base,
\( x \), in feet.
$BR
$BR
\( f(x) = \) 
\{ ans_rule(30) \}
square feet
\{ AnswerFormatHelp("formulas") \}
END_TEXT


######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


COMMENT('MathObject version');
