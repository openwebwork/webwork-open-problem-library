####################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"contextInequalities.pl",
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Inequalities")->variables->are(x=>"Real");

$a = random(2,9,1);
$b = random(2,9,1);
while ($a==$b) { $b=random(2,9,1); }

$answera = Compute("x < -$a or $b < x");
$answerb = Compute("-$a < x < $b");


######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( f(x) = (x-$b)(x+$a) \).
$BR
$BR
(a) For which values of \( x \) is the function
\( f(x) \) positive?  Enter your answer using 
inequalities.
$BR
\{ ans_rule(30) \} 
\{ AnswerFormatHelp("inequalities") \}
$BR
$BR
(a) For which values of \( x \) is the function
\( f(x) \) negative?  Enter your answer using 
inequalities.
$BR
\{ ans_rule(30) \} 
\{ AnswerFormatHelp("inequalities") \}
END_TEXT
Context()->normalStrings;


######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answera->cmp() );
ANS($answerb->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();