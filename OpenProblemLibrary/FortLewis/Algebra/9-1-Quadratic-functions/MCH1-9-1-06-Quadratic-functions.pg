####################################
#  Initialization

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextInequalities.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Inequalities")->variables->are(x=>"Real");

$a = random(2,5,1);
$b = random(6,9,1);

$apb = $a + $b;
$ab = $a * $b;

$s = random(-1,1,2);

if ($s==1) {

$f = "x^2 - $apb x + $ab";
$answera = Compute("x < $a or $b < x");
$answerb = Compute("$a < x < $b");

} else {

$f = "-x^2 + $apb x - $ab";
$answerb = Compute("x < $a or $b < x");
$answera = Compute("$a < x < $b");

}


######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( f(x) = $f \).
$BR
$BR
(a) For which values of \( x \) is the function
\( f(x) \) positive?  Enter your answer using 
inequalities.
$BR
\{ ans_rule(30) \} 
\{ AnswerFormatHelp("inequalities") \}
$BR
$BR
(a) For which values of \( x \) is the function
\( f(x) \) negative?  Enter your answer using 
inequalities.
$BR
\{ ans_rule(30) \} 
\{ AnswerFormatHelp("inequalities") \}
END_TEXT
Context()->normalStrings;


######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answera->cmp() );
ANS($answerb->cmp() );


;
ENDDOCUMENT();
