## Quadratic functions, expressions, and equations
## ENDDESCRIPTION


## BookTitle('Algebra: Form and Function')
## BookChapter('Quadratic Functions, Expressions, and Equations')
## DBsubject(Algebra)
## DBchapter(Quadratic equations and functions)
## DBsection(Forms: vertex, factored, general)
## Date(01/01/10)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## Level(2)
## MO(1)
## TitleText1('Algebra: Form and Function')
## AuthorText1('McCallum, Connally, and Hughes-Hallett')
## EditionText1('1')
## Section1('9.1')
## Problem1('10')
## KEYWORDS('quadratic functions')

####################################
#  Initialization

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGgraphmacros.pl",
  "unionTables.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()); 

$refreshCachedImages=1;

####################################
#  Setup

$i = random(0,1,1);

$A = non_zero_random(-1,1,1);
$H = non_zero_random(-1,1,1);

$gr = init_graph(-3,-3,3,3,axes=>[0,0],size=>[300,300]);
$gr->lb( new Label(2.75,0.25,'x','black','center','middle'));
$gr->lb( new Label(0.25,2.75,'y','black','center','middle'));

add_functions($gr,"$A*(x-($H))^2 for x in <-3,3> using color:blue and weight:2");

if ($A==1) {
  $a = PopUp(["?","positive","negative","zero"],"positive");
} else {  
  $a = PopUp(["?","positive","negative","zero"],"negative");
}

if ($H == -1) {
  $h = PopUp(["?","positive","negative","zero"],"negative");
} else {  
  $h = PopUp(["?","positive","negative","zero"],"positive");
}

$k = PopUp(["?","positive","negative","zero"],"zero");

######################################
#  Main text

BEGIN_TEXT
\{
ColumnTable(
"The quadratic function in the graph is given by 
\( f(x) = a (x-h)^2 + k \).  From the graph, determine whether
each constant \( a, h, \) and \( k \) is positive, 
negative, or zero.".
$BR.
$BR.
"\( a \) is ".$a->menu().
$BR.
"\( h \) is ".$h->menu().
$BR.
"\( k \) is ".$k->menu()
,
image(insertGraph($gr),width=>300,height=>300,tex_size=>400)
,
indent=>"0", separation=>"30", valign=>"TOP"
);
\}
END_TEXT


######################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

ANS($a->cmp() );
ANS($h->cmp() );
ANS($k->cmp() );


;
ENDDOCUMENT();
