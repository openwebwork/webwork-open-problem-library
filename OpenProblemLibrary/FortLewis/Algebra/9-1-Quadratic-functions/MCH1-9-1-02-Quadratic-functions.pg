####################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"parserNumberWithUnits.pl",
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Numeric")->variables->are(t=>"Real");

$a = random(7,10,1);
$b = random(2,6,1);

$p[0] = 16 * $a * $b;
$p[1] = -16 * ($b - $a);
$p[2] = -16;

$answera = NumberWithUnits("$p[0]","ft");
$answerb = NumberWithUnits("$a","s");

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
A coin, thrown upward at time \( t = 0 \) from
an office in the Empire State Building, 
has height in feet above the ground \( t \) seconds
later given by 
$PAR
$BCENTER
\( 
h(t) 
= $p[2] t^2 + $p[1] t + $p[0] 
= -16 (t-$a)(t+$b).
\)
$ECENTER
$PAR
(a) From what height is the coin thrown?  Include
units in your answer.
\{ ans_rule(20) \} 
\{ AnswerFormatHelp("units","help (units)") \}
$BR
$BR
(b) At what time does the coin hit the ground?  Include
units in your answer.
\{ ans_rule(20) \} 
\{ AnswerFormatHelp("units","help (units)") \}
END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answera->cmp() );
ANS($answerb->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();