##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"alignedChoice.pl",
"contextLimitedPolynomial.pl",
"parserAssignment.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("LimitedPolynomial-Strict")->variables->add(y=>"Real");
parser::Assignment->Allow;

($x,$y) = (random(2,9,1),random(2,9,1));
$m = random(-1,1,2)*random(2,9,1);
$b = $y - $m * $x;

$answer = Formula("y = $m x + $b");



##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write the equation for the line 
\( y - $y = $m (x - $x) \) in the slope-intercept
form, and enter your answer
in this form.
$BR
$BR
\{ ans_rule(30) \}  
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ENDDOCUMENT();  

