##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextLimitedPolynomial.pl",
"parserAssignment.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("LimitedPolynomial-Strict")->variables->add(y=>"Real");
parser::Assignment->Allow;


$a = random(50,100,10);
$b = random(50,100,10);
while ($a == $b) { $b = random(50,100,10); }
$c = random(100,500,50);

$answer = Formula("y = ($c / $b) - ($a / $b) * x");

$M = Compute("-$a / $b");
$B = Compute("$c / $b");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write the linear equation \( $a x + $b y = $c \) 
in slope-intercept form.  Enter
your answer as an equation in slope-intercept form.
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("equations") \}
$BR
$BR
The slope is \( m = \) \{ ans_rule(10) \} 
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
The \( y \)-intercept is \( b = \) \{ ans_rule(10) \} 
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp() );
ANS( $M->cmp() );
ANS( $B->cmp() );

ENDDOCUMENT();  