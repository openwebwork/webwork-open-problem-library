## DESCRIPTION
## Equations for lines in the plane
## ENDDESCRIPTION


## DBsubject(Algebra)
## DBchapter(Linear equations and functions)
## DBsection(Equations of lines: slope-intercept form)
## Date(01/01/10)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## Level(2)
## MO(1)
## TitleText1('Algebra Form and Function')
## AuthorText1('McCallum, Connally, and Hughes-Hallett')
## EditionText1('1')
## Section1('5.4')
## Problem1('2')
## KEYWORDS('linear equations')

##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextLimitedPolynomial.pl",
  "parserAssignment.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("LimitedPolynomial-Strict")->variables->add(
'y'=>'Real',
'm'=>'Real',
'b'=>'Real',
);
parser::Assignment->Allow;


$a = random(50,100,10);
$b = random(50,100,10);
while ($a == $b) { $b = random(50,100,10); }
$c = random(100,500,50);

$answer = Formula("y = ($c / $b) - ($a / $b) * x");

$eqn = Compute("y = m x + b");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
(a) Write an equation for the line through the
point \( (0,b) \) with slope \( m \).  Use 
\( x \) and \( y \) for variable names.
$BR
$BR
\{ ans_rule(30) \}
\{ AnswerFormatHelp("equations") \}
$BR
$BR
(b) Write the linear equation \( $a x + $b y = $c \) 
in slope-intercept form.  Enter
your answer as an equation in slope-intercept form.
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;

ANS( $eqn->cmp() );

ANS( $answer->cmp() );

ENDDOCUMENT();  
