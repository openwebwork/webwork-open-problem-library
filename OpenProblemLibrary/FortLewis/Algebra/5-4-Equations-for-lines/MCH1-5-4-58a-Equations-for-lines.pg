## Problem1('58')
## KEYWORDS('linear equations')

##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextLimitedPolynomial.pl",
  "parserAssignment.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("LimitedPolynomial-Strict")->variables->add(y=>"Real");
parser::Assignment->Allow;


$a = random(2,9,1);
$b = random(2,9,1);
while ($a==$b) { $b = random(2,9,1); }
$c = non_zero_random(-9,9,1);

$answer = Compute("y = (-$a/$b) x + $c/$b");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write the equation for the line 
\( $a x + $b y = $c \) in the form 
slope-intercept form, and enter it in this form.
$BR
$BR
\{ ans_rule(30) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ENDDOCUMENT();  
