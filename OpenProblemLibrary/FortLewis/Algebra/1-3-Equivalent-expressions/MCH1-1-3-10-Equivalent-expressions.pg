########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraders.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

$tf = new_select_list();

$tf->rf_print_q(~~&pop_up_list_print_q);
$tf->ra_pop_up_list( [ No_answer=>"?", 
"Equivalent"=>"Equivalent", "Not Equivalent"=>"Not Equivalent"] );

$tf -> qa ( 
"\( -a+2 \) and \( -(a+2) \) $BR",
"Not Equivalent",
"\( -a+2 \) and \( -(2-a) \) $BR",
"Not Equivalent",
"\( -a+2 \) and \( -2a + 4/2 \) $BR",
"Not Equivalent",
"\( -a+2 \) and \( 2-a \) $BR",
"Equivalent",
"\( -a+2 \) and \( -(a-2) \) $BR",
"Equivalent",
);

$tf->choose(5);


################################################
#  Main text

BEGIN_TEXT

Determine whether the expressions are
equivalent or not.
$BR
\{ $tf-> print_q \}

END_TEXT


