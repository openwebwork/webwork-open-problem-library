TEXT(beginproblem());

#######################################
#  Set-up

$tf = new_select_list();

$tf->rf_print_q(~~&pop_up_list_print_q);
$tf->ra_pop_up_list( [ No_answer=>"?", 
"Equivalent"=>"Equivalent", "Not Equivalent"=>"Not Equivalent"] );

$tf -> qa ( 
"\( 6 + r/2 \) and \( 3 + 0.5r \) $BR",
"Not Equivalent",
"\( \displaystyle 6 + r/2 \) and \( (6 + r)/2 \) $BR",
"Not Equivalent",
"\( 6 + r/2 \) and \( \displaystyle 6 + \frac{1}{2} r \) $BR",
"Equivalent",
"\( \displaystyle \frac{6 + r}{2} \) and \( 3 + 0.5r \) $BR",
"Equivalent",
"\( \displaystyle \frac{6 + r}{2} \) and \( (6 + r)/2 \) $BR",
"Equivalent",
);

$tf->choose(5);


################################################
#  Main text

BEGIN_TEXT

Determine whether the expressions are
equivalent or not.
$BR
\{ $tf-> print_q \}

END_TEXT


