###########################
#  Initialization

DOCUMENT();       

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);
       
TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


###########################
#  Setup

Context("Numeric");

$a1 = random(7,11,2);
$b1 = random(2,8,2);
$d1 = $b1+2;
$b = $b1*$d1;

###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write the given exponential function in 
the form \(ab^t\) and identify the 
initial value and the growth factor.
$BR
$BR
\( Q = $a1\cdot $b1^t \cdot $d1^t \) has:
$BR
$BR
\( a = \) \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$BR
\( b = \) \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


###########################
#  Answer evaluation

ANS( Compute("1/$a1")->cmp() );
ANS( Compute("$b")->cmp() );

;

ENDDOCUMENT();
