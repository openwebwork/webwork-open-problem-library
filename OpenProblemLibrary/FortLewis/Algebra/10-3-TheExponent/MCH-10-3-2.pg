DOCUMENT();  

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##################################
#  Setup

Context("Numeric");
Context()->variables->are(t=>"Real");

$a = random(11000,19000,1000);
$r = random(7,15,1);
$b = 1+$r/100;
$T = random(4,9,1);
$f = Formula("$a * ($b)**(t/$T)");


#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find a formula for the value, \( V \), of an 
investment, in dollars, initially worth ${DOLLAR}\( $a \) 
that grows by \( $r \) ${PERCENT} every \( $T \) 
years.
$BR
$BR
\( V = f(t)= \)\{ ans_rule(20) \}
\{ AnswerFormatHelp("formula") \}
END_TEXT
Context()->normalStrings;


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($f->cmp() );

COMMENT('MathObject version');
ENDDOCUMENT();