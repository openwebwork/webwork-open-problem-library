##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "parserAssignment.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


##############################################
#  Setup

Context("Numeric")->variables->add(y=>"Real");
parser::Assignment->Allow;

$k = random(3,5,1);
do { $n = random(3,5,1); } until ($k != $n);

@ordinals = ("third","fourth","fifth");

$x = random(2,3,1);
$f = Formula("$k x^$n");
$y = $f->eval(x=>$x);

$answer = Formula("y = $f");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write an equation for \( y \) in terms of \( x \)
if \( y \) is proportional to the $ordinals[$n-3]
power of \( x \), and \( y = $y \) when \( x = $x \).
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

;
ENDDOCUMENT();
