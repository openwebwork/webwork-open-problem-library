##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "parserAssignment.pl",
  "unionLists.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


##############################################
#  Setup

Context("Numeric")->variables->are(A=>"Real",B=>"Real");
parser::Assignment->Allow;

$k = random(3,6,1);

$f = Formula("$k B^2");
$B = random(3,5,1);
$A = $f->eval(B=>$B);
$B1 = random(6,8,1);

$answer[0] = Real("$k"); 
$answer[1] = Formula("A = $k B^2");
$answer[2] = $f->eval(B=>$B1);


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( A \) is directly proportional to the 
square of \( B \), and \( A = $A \) when \( B = $B \).
\{ BeginList('OL') \}

$ITEM 
Find the constant of proportionality.
$BR
\{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}

$ITEMSEP
$ITEM 
Write the formula for \( A \) in terms of \( B \).
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("equations") \}

$ITEMSEP
$ITEM
Use your formula to find \( A \) when \( B = $B1 \).
$BR
\( A = \) 
\{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}

\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

foreach my $i (0..2) {
  ANS( $answer[$i]->cmp() );
}


;
ENDDOCUMENT();
