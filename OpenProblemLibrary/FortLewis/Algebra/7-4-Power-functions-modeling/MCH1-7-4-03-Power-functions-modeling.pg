##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"parserAssignment.pl",
);

TEXT(beginproblem());


##############################################
#  Setup

Context("Numeric")->variables->add(y=>"Real");
parser::Assignment->Allow;

$k = random(3,6,1);

$f = Formula("$k x^2");
$x = random(3,5,1);
$y = $f->eval(x=>$x);

$answer = Formula("y = $k x^2");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write an equation for \( y \) in terms of \( x \)
if \( y \) is proportional to the square of \( x \),
and \( y = $y \) when \( x = $x \).
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();