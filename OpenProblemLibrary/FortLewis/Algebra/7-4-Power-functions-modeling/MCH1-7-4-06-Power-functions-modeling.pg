##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"parserAssignment.pl",
);

TEXT(beginproblem());


##############################################
#  Setup

Context("Numeric")->variables->are(A=>"Real",B=>"Real");
parser::Assignment->Allow;
Context()->variables->set(B=>{limits=>[1,3]});

$A = list_random(20.5,21.5,22.5,23.5,24.5);
$B = random(-4,-2,1);
$k = $A * ($B)**3;

$f = Formula("$k * (B^(-3))");

$answer = Formula("A = $f");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
If \( A \) is inversely proportional to the cube of
\( B \), and \( A = $A \) when \( B = $B \), write
\( A \) as a power function of \( B \). 
$BR
$BR
\{ ans_rule(20) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );


COMMENT('MathObject version');
