###########################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGML.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


###########################
#  Setup

Context("Numeric");

$y = random(0,4,1);

if ($y < 4) {
   $answer = String("none")->cmp( typeMatch=>Formula("x") );
} else {
   $answer = Formula("2*x")->cmp( typeMatch=>Formula("x") );
}


###########################
#  Main text

BEGIN_PGML
Is there a line through the points [` (0,0) `], 
[` (1,2) `], and [` (2,[$y]) `]?  If there is, 
enter the equation for this line.  If not, enter
_NONE_.

[` y = `] [_______________]{$answer} [@ AnswerFormatHelp("formulas") @]*
END_PGML


############################
#  Solution

BEGIN_PGML_SOLUTION
Solution explanation goes here.
END_PGML_SOLUTION

COMMENT('Uses PGML.');

ENDDOCUMENT();
