###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());



###########################
#  Setup

Context("Numeric");

$f = Formula("3^(-x)");

@answer = ();
foreach my $i (0..2) {
  $answer[$i] = $f->eval(x=>$i);
}

$table = $BCENTER.begintable(5) .
row( "\(x = \)", "0", "1", "2" ) .
row( "\(f(x) = \)", ans_rule(5), ans_rule(5), ans_rule(5) ) .
endtable().$ECENTER; 


###########################
#  Main text

BEGIN_PGML
If [` f(x) = [$f] `], fill in the table of values with numbers.
[@ AnswerFormatHelp("numbers") @]*

[@ $table @]***
END_PGML


############################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

foreach my $i (0..2) {
  ANS( $answer[$i]->cmp() );
}


