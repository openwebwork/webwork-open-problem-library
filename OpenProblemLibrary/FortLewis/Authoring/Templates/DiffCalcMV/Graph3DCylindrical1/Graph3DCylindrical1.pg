####################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "LiveGraphicsCylindricalPlot3D.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


##################################
#  Set-up

Context("Numeric");
Context()->variables->are(x=>"Real",y=>"Real",r=>"Real",t=>"Real");

$a = random(4,6,1);

$plot = CylindricalPlot3D(
function => Formula("$a/e^r"),
rvar => "r",
tvar => "t",
rmin =>  0,
rmax =>  3,
tmin =>  0,
tmax =>  2*pi,
rsamples => 20,
tsamples => 15,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
outputtype => 4,
);


####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{ 
Live3Ddata(
$plot,
image => alias("wavy-surface.png"), 
size => [400,400],
tex_size => 600,
tex_center => 1,
scale => 1.1,
);
\}
END_TEXT
Context()->normalStrings;


