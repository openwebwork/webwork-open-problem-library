#########################################
# ANSWER section
#########################################

ANS( NumberWithUnits("$Fa","m")  ->cmp(tolerance=>0.11, tolType=>'absolute') );
ANS( NumberWithUnits("$Fb","m")  ->cmp(tolerance=>0.11, tolType=>'absolute') );
