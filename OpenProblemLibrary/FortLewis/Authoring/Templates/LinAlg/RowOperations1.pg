######################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);
$showPartialCorrectAnswers = 0;
TEXT(beginproblem()); 


######################
#  Setup

Context('Matrix');

do {

$A = Matrix([
[non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
]);

} until (($A->row(1) != $A->row(2)) && 
         ($A->row(1) != $A->row(3)) && 
         ($A->row(2) != $A->row(3)));

$k = random(2,9,1);

$op = "R_{1} + $k R_{2} \rightarrow R_{1}";

$answer = Matrix([
  $A->row(1) + $k*($A->row(2)),
  $A->row(2),
  $A->row(3),
  ]);
  

####################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Give the result of applying the row operation \( $op \) to the given matrix.
$BR
$BR
\( $A \mathop{\longrightarrow}^{$op} \)
\{ $answer->ans_array \}
END_TEXT
Context()->normalStrings;


######################
#  Answer evaluation


ANS( $answer->cmp() );

COMMENT('MathObject version.');

ENDDOCUMENT();
