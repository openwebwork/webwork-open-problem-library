#  Answer evaluation

$showPartialCorrectAnswers = 1;

sub components {

  my $V = shift;
  $V = $V->perl;

  if ( $V =~ m/Value/ ) {

    $V =~ s/Value::Vector->new~~(//g;
    $V = substr($V, 0, -1);
    $V =~ s/Value::Real->new//g;
    $V =~ s/~~$//g;
    $V =~ s/ //g;
    return split(',',$V);

  } else {

    $V =~ s/~~* i~~)/~~),/g;
    $V =~ s/~~* j~~)/~~),/g;
    $V =~ s/~~* k~~)/~~),/g;
    $V =~ s/~~$//g;
    $V =~ s/ //g;
    $V = substr($V, 0, -1);
    return split(',',$V);

  }

}


sub mycheck {
  my ($correct, $student, $ansHash) = @_;
  my @r = components($student);
  my $xstu = Formula("$r[0]");
  my $ystu = Formula("$r[1]");
  if ( ($xstu->D('t')==Formula("2")) &&
       ($ystu->D('t')==Formula("8t")) )
  { return 1; } else { return 0; } 
}

ANS( $answer->cmp( checker=>~~&mycheck ) );


