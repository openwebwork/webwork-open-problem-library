##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "parserImplicitEquation.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("ImplicitEquation");
Context()->variables->{namePattern} = qr/[a-z][a-z0-9_]*'*/i;
Context()->variables->are(
"y"   => "Real",
"y'"  => "Real",
"y''" => "Real",
"t"   => "Real",
);

$diffeq = ImplicitEquation("y'' + 2y' + y = cos(t)");


###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose this is a word problem that asks 
students to set up a differential equation 
and enter their differential equation
as the answer.
$BR
$BR
Enter your differential equation below in terms of 
\( y, y^{\,\prime}, y^{\,\prime\prime}, t \). 
(Suppose the answer is the differential equation 
\( $diffeq \).)
$BR
$BR
\{ ans_rule(40) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;


############################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $diffeq->cmp() );


############################
#  Solution

Context()->texStrings;
BEGIN_SOLUTION

Solution explanation goes here.
END_SOLUTION
Context()->normalStrings;

;

ENDDOCUMENT();
