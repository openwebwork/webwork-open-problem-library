###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


###########################
#  Setup

Context("Fraction-NoDecimals");

$answer = Compute("3/2");


###########################
#  Main text

BEGIN_PGML
Simplify [` \displaystyle \frac{6}{4} `].

Answer = [_______________]{$answer->cmp(
  studentsMustReduceFractions=>1,
  reduceFractions=>1,
  allowMixedNumbers=>0, 
  )}
[@ AnswerFormatHelp("fractions") @]*
END_PGML


############################
#  Solution

BEGIN_PGML_SOLUTION
Factor and cancel to obtain [` \displaystyle [$answer]  `].
END_PGML_SOLUTION

COMMENT('Uses PGML.');

ENDDOCUMENT();
