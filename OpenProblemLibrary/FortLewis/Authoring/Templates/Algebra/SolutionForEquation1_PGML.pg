####################################
#  Initialization

DOCUMENT();   

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserSolutionFor.pl",
  "AnswerFormatHelp.pl",
  "PGML.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


##################################
#  Set-up

Context("Vector");

$r = random(3,6,1);

$answer = SolutionFor("x^2+y^2+z^2=$r^2", [$r,0,0] );

$eqn = $answer->{f};

####################################
#  Main text

BEGIN_PGML
A solution to the equation [` [$eqn] `]
is [` (x,y,z) = `] 
[_______________]{$answer} [@ AnswerFormatHelp("points") @]*
END_PGML


#####################################
#  Solution

BEGIN_PGML_SOLUTION
Solution explanation goes here.
END_PGML_SOLUTION

COMMENT("Uses PGML.");

ENDDOCUMENT();
