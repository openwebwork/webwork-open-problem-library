###########################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###########################
#  Setup

Context("Fraction-NoDecimals");

$answer = Compute("3/2");


###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Simplify \( \displaystyle \frac{6}{4} \).
$BR
$BR
Answer =
\{ ans_rule(20) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;


############################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp(
  studentsMustReduceFractions=>1,
  reduceFractions=>1,
  allowMixedNumbers=>0, 
  ) 
);


############################
#  Solution

Context()->texStrings;
BEGIN_SOLUTION

Factor and cancel to obtain 
\( \displaystyle $answer \)
END_SOLUTION
Context()->normalStrings;

;

ENDDOCUMENT();
