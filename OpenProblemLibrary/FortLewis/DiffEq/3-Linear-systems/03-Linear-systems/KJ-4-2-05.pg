##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "unionLists.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

SRAND($psvn);


#############################
#  Setup

Context("Numeric");
Context()->variables->are(
t=>"Real",
'c1'=>"Real",
'c2'=>"Real",
);
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);


$i = random(0,5,1);

if ($i == 0) {

  @matrix = (1,3,3,1);
  @evect1 = (1,1);
  $eval1  = 4;
  @evect2 = (1,-1);
  $eval2  = -2;

} elsif ($i == 1) {

  @matrix = (7,2,-4,1);
  @evect1 = (1,-1);
  $eval1  = 5;
  @evect2 = (1,-2);
  $eval2  = 3;

} elsif ($i == 2) {

  @matrix = (4,1,1,4);
  @evect1 = (1,1);
  $eval1  = 5;
  @evect2 = (1,-1);
  $eval2  = 3;

} elsif ($i == 3) {

  @matrix = (1,-2,1,4);
  @evect1 = (2,-1);
  $eval1  = 2;
  @evect2 = (1,-1);
  $eval2  = 3;

} elsif ($i == 4) {

  @matrix = (3,2,4,1);
  @evect1 = (1,1);
  $eval1  = 5;
  @evect2 = (-1,2);
  $eval2  = -1;

} else {

  @matrix = (5,3,3,5);
  @evect1 = (1,-1);
  $eval1  = 2;
  @evect2 = (1,1);
  $eval2  = 8;
}

$y1 = Formula("$evect1[0] c1 e^($eval1 t) + $evect2[0] c2 e^($eval2 t)")->reduce();
$y2 = Formula("$evect1[1] c1 e^($eval1 t) + $evect2[1] c2 e^($eval2 t)")->reduce();

$y1p = $y1->D('t');
$y2p = $y2->D('t');

foreach my $j (0..3) {
  if ($matrix[$j] == 1) { $m[$j] = ""; } else { $m[$j] = $matrix[$j]; }
}



######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
$BITALIC This is the second part of a three-part problem. $EITALIC
$BR
$BR
Consider the system of differential equations
$PAR
\[
\begin{array}{rcl}
y_1^{\,\prime} & = & $m[0] y_1 + $m[1] y_2, \\
y_2^{\,\prime} & = & $m[2] y_1 + $m[3] y_2. 
\end{array}
\]
$BR
Verify that for any constants \( c_1 \) and 
\( c_2 \), the functions
$PAR
\[
\begin{array}{rcl}
y_1(t) & = & $y1, \\
y_2(t) & = & $y2, 
\end{array}
\]
$BR
satisfy the system of differential equations.
Enter \( c_1 \) as ${BTT}c1${ETT} and \( c_2 \) 
as ${BTT}c2${ETT}.

\{ BeginList("OL",type=>'a') \}

$ITEM
Find the value of each term in the equation 
\( y_1^{\,\prime} = $m[0] y_1 + $m[1] y_2 \) in terms 
of the variable \( t \). (Enter the terms in the 
order given.) 
$BR
$BR
\{ ans_rule(20) \} = 
\{ ans_rule(30) \} + 
\{ ans_rule(30) \}. 


$ITEMSEP
$ITEM
Find the value of each term in the equation 
\( y_2^{\,\prime} = $m[2] y_1 + $m[3] y_2 \) in terms 
of the variable \( t \). (Enter the terms in the 
order given.) 
$BR
$BR
\{ ans_rule(20) \} = 
\{ ans_rule(30) \} + 
\{ ans_rule(30) \}. 


\{ EndList("OL") \}

END_TEXT
Context()->normalStrings;


######################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $y1p->cmp() );
ANS( ($matrix[0]*$y1)->cmp() );
ANS( ($matrix[1]*$y2)->cmp() );

ANS( $y2p->cmp() );
ANS( ($matrix[2]*$y1)->cmp() );
ANS( ($matrix[3]*$y2)->cmp() );




ENDDOCUMENT();
