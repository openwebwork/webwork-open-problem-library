##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

SRAND($psvn);


#############################
#  Setup

Context("Numeric");
Context()->variables->are(
t=>"Real",
);
Context()->reduction->set('(-x)-y'=>0);
Context()->reduction->set('(-x)+y'=>0);
Context()->variables->set(t=>{limits=>[1,2]});

$tinit = random(2,5,1);

@P = (
[Formula("2 t^(-2)"),Formula("1 - 2 t^(-1) + 2 t^(-2)")],
[Formula("-2 t^(-2)"),Formula("2 t^(-1) - 2 t^(-2)")]
);

@y1 = ( 
  Formula("t^2 - 2 t"), 
  Formula("2 t") 
); 
@y2 = ( 
  Formula("t - 1"), 
  Formula("1") 
); 


$c1 = non_zero_random(-5,5,1);
do { $c2 = non_zero_random(-5,5,1); } until ($c2 != $c1);


$y1init = $c1 * $y1[0]->eval(t=>"$tinit") + $c2 * $y2[0]->eval(t=>"$tinit");
$y2init = $c1 * $y1[1]->eval(t=>"$tinit") + $c2 * $y2[1]->eval(t=>"$tinit");


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
$BITALIC This is the fourth part of a four-part problem. $EITALIC
$BR
$BR
If the given solutions
$PAR
\[
\boldsymbol{\vec{y}_1}(t) =
\left\lbrack
\begin{array}{c}
$y1[0] \\
$y1[1]
\end{array}
\right\rbrack,
\ \ \
\boldsymbol{\vec{y}_2}(t) =
\left\lbrack
\begin{array}{c}
$y2[0] \\
$y2[1]
\end{array}
\right\rbrack.
\]
$BR
form a fundamental set (i.e., linearly independent set) of solutions for the 
initial value problem
$PAR
\[
\boldsymbol{\vec{y}^{\,\prime}}
=
\left\lbrack
\begin{array}{cc}
$P[0][0] & $P[0][1] \\
$P[1][0] & $P[1][1]
\end{array}
\right\rbrack
\boldsymbol{\vec{y}},
\ \ \
\boldsymbol{\vec{y}}($tinit) 
=
\left\lbrack
\begin{array}{c}
$y1init \\
$y2init
\end{array}
\right\rbrack,
\ \ \
t > 0,
\]
$BR
impose the given initial condition and find
the unique solution to the initial value problem
for \( t > 0 \).
If the given solutions do not form a fundamental 
set, enter ${BITALIC}NONE${EITALIC}
in all of the answer blanks.
$PAR
$BCENTER
\{ 
mbox(
  "\( \boldsymbol{\vec{y}}(t) = \big( \)",
  ans_rule(10),
  "\( \big) \displaystyle
  \left\lbrack
  \begin{array}{c}
  $y1[0] \\
  $y1[1]
  \end{array}
  \right\rbrack
  + \big( 
  \)",
  ans_rule(10),
  "\( \big) \displaystyle
  \left\lbrack
  \begin{array}{c}
  $y2[0] \\
  $y2[1]
  \end{array}
  \right\rbrack.
  \)"
);
\}
$ECENTER

END_TEXT
Context()->normalStrings;


######################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute("$c1")->cmp() );
ANS( Compute("$c2")->cmp() );

;

ENDDOCUMENT();
