##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

SRAND($psvn);


#############################
#  Setup

Context("Numeric");
Context()->variables->are(
t=>"Real",
);
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);

$i = random(0,5,1);

$i = ($i + 3) % 6;

if ($i == 0) {

  @matrix = (1,3,3,1);
  @evect1 = (1,1);
  $eval1  = 4;
  @evect2 = (1,-1);
  $eval2  = -2;

} elsif ($i == 1) {

  @matrix = (7,2,-4,1);
  @evect1 = (1,-1);
  $eval1  = 5;
  @evect2 = (1,-2);
  $eval2  = 3;

} elsif ($i == 2) {

  @matrix = (4,1,1,4);
  @evect1 = (1,1);
  $eval1  = 5;
  @evect2 = (1,-1);
  $eval2  = 3;

} elsif ($i == 3) {

  @matrix = (1,-2,1,4);
  @evect1 = (2,-1);
  $eval1  = 2;
  @evect2 = (1,-1);
  $eval2  = 3;

} elsif ($i == 4) {

  @matrix = (3,2,4,1);
  @evect1 = (1,1);
  $eval1  = 5;
  @evect2 = (-1,2);
  $eval2  = -1;

} else {

  @matrix = (5,3,3,5);
  @evect1 = (1,-1);
  $eval1  = 2;
  @evect2 = (1,1);
  $eval2  = 8;
}


$P11 = Formula("$evect1[0] e^($eval1 t)");
$P21 = Formula("$evect1[1] e^($eval1 t)");

$P12 = Formula("$evect2[0] e^($eval2 t)");
$P22 = Formula("$evect2[1] e^($eval2 t)");

foreach my $j (0..3) {
  if ($matrix[$j] == 1) { $m[$j] = ""; } else { $m[$j] = $matrix[$j]; }
}

$c1 = non_zero_random(-8,8,1);
do { $c2 = non_zero_random(-8,8,1); } until ($c2 != $c1);

$y1init = $evect1[0] * $c1 + $evect2[0] * $c2;
$y2init = $evect1[1] * $c1 + $evect2[1] * $c2;



######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Consider the system of differential equations
$PAR
\[
\boldsymbol{\vec{y}^{\,\prime}} =
\left\lbrack 
\begin{array}{rr}
$matrix[0] & $matrix[1] \\
$matrix[2] & $matrix[3] 
\end{array}
\right\rbrack
\boldsymbol{\vec{y}},
\ \ \ 
\boldsymbol{\vec{y}}(0) = 
\left\lbrack
\begin{array}{r}
$y1init \\
$y2init
\end{array}
\right\rbrack.
\]
$BR
Verify that 
$PAR
\[
\boldsymbol{\vec{y}}(t) =
c_1 e^{$eval1 t} 
\left\lbrack
\begin{array}{r}
$evect1[0] \\
$evect1[1] 
\end{array}
\right\rbrack
+
c_2 e^{$eval2 t} 
\left\lbrack
\begin{array}{r}
$evect2[0] \\
$evect2[1] 
\end{array}
\right\rbrack.
\]
$BR
is a solution to the system of differential 
equations for any choice of the constants 
\( c_1 \) and \( c_2 \).  Find values of 
\( c_1 \) and \( c_2 \) that solve the 
given initial value problem.  (According
to the uniqueness theorem, you have found 
the unique solution of 
\( \boldsymbol{\vec{y}^{\,\prime}} = P \boldsymbol{\vec{y}} \), 
$SPACE \( \boldsymbol{\vec{y}}(0) = \boldsymbol{\vec{y}_0} \)).

$PAR
$BCENTER
\{ 
mbox(
  "\( \boldsymbol{\vec{y}}(t) = \big( \)",
  ans_rule(5), 
  "\( \big) \cdot e^{$eval1 t} \left\lbrack \begin{array}{r} $evect1[0] \\ $evect1[1] \end{array} \right\rbrack  + \big( \) ",
  ans_rule(5), 
  "\( \big) \cdot e^{$eval2 t} \left\lbrack \begin{array}{r} $evect2[0] \\ $evect2[1] \end{array} \right\rbrack. \)"  
);
\}
$ECENTER

END_TEXT
Context()->normalStrings;


######################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute("$c1")->cmp() );
ANS( Compute("$c2")->cmp() );




ENDDOCUMENT();
