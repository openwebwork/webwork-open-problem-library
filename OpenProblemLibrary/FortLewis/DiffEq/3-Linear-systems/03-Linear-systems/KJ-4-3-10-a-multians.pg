##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGmatrixmacros.pl",
"parserMultiAnswer.pl",
"unionLists.pl",
);

TEXT(beginproblem());

SRAND($psvn);


#############################
#  Setup

Context("Numeric");
Context()->variables->are(
t=>"Real",
);

$k = random(2,9,1);

@P = (
[0,$k],
[-($k),0]
);

@y1 = ( Formula("cos($k t)"), Formula("-sin($k t)") ); 
@y2 = ( Formula("-$k sin($k t)"), Formula("-$k cos($k t)") ); 

$W = Formula("-$k");


$multians1 = MultiAnswer(
$y1[0]->D('t'),
$y1[1]->D('t'),
$P[0][0]*$y1[0] + $P[0][1]*$y1[1],
$P[1][0]*$y1[0] + $P[1][1]*$y1[1]
)->with(

  singleResult => 1,
  allowBlankAnswers => 1,
  checkTypes => 0,
  format =>  "
  <table border='0'>
  <tr><td>
    <table border='0' cellspacing='10'><tr><td> %s </td></tr><tr><td> %s </td></tr></table>
  </td><td>
    <table border='0' cellspacing='10'><tr><td> %s </td></tr><tr><td> %s </td></tr></table>  
  </td></tr>
  </table>",
  tex_format =>  "\left\lbrack \begin{array}{r} %s \\ %s \end{array} \right\rbrack 
  = \left\lbrack \begin{array}{r} %s \\ %s \end{array} \right\rbrack",

  checker => sub {
      my ( $correct, $student, $answerHash ) = @_;
      my @c = @{$correct};
      my @s = @{$student};
      my @score = ();
      foreach my $j (0..3) {
        $score[$j] = 0;
        if ($c[$j]->typeMatch($s[$j]) && $c[$j] == $s[$j]) { $score[$j] = 1; }
      }
      return [ @score ];
  }

);


$multians2 = MultiAnswer(
$y2[0]->D('t'), 
$y2[1]->D('t'),
$P[0][0]*$y2[0] + $P[0][1]*$y2[1],
$P[1][0]*$y2[0] + $P[1][1]*$y2[1]
)->with(

  singleResult => 1,
  allowBlankAnswers => 1,
  checkTypes => 0,
  format =>  "
  <table border='0'>
  <tr><td>
    <table border='0' cellspacing='10'><tr><td> %s </td></tr><tr><td> %s </td></tr></table>
  </td><td>
    <table border='0' cellspacing='10'><tr><td> %s </td></tr><tr><td> %s </td></tr></table>  
  </td></tr>
  </table>",
  tex_format =>  "\left\lbrack \begin{array}{r} %s \\ %s \end{array} \right\rbrack 
  = \left\lbrack \begin{array}{r} %s \\ %s \end{array} \right\rbrack",

  checker => sub {
      my ( $correct, $student, $answerHash ) = @_;
      my @c = @{$correct};
      my @s = @{$student};
      my @score = ();
      foreach my $j (0..3) {
        $score[$j] = 0;
        if ($c[$j]->typeMatch($s[$j]) && $c[$j] == $s[$j]) { $score[$j] = 1; }
      }
      return [ @score ];
  }

);


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
$BITALIC This is the first part of a two-part problem. $EITALIC
$BR
$BR
Let
$PAR
\[
P =
\left\lbrack
\begin{array}{rr}
$P[0][0] & $P[0][1] \\
$P[1][0] & $P[1][1]
\end{array}
\right\rbrack,
\]
\[
\boldsymbol{\vec{y}_1}(t) =
\left\lbrack
\begin{array}{c}
$y1[0] \\
$y1[1]
\end{array}
\right\rbrack,
\ \ \
\boldsymbol{\vec{y}_2}(t) =
\left\lbrack
\begin{array}{c}
$y2[0] \\
$y2[1]
\end{array}
\right\rbrack.
\]
$BR


\{ BeginList("OL",type=>'a') \}

$ITEM
Show that \( \boldsymbol{\vec{y}_1}(t) \) 
is a solution to the system 
\( \boldsymbol{\vec{y}^{\,\prime}} = P \boldsymbol{\vec{y}} \) 
by evaluating derivatives and the 
matrix product
$PAR 
\[ 
\boldsymbol{\vec{y}_1^{\,\prime}}(t) 
= 
\left\lbrack 
\begin{array}{rr} 
$P[0][0] & $P[0][1] \\ 
$P[1][0] & $P[1][1] 
\end{array}
\right\rbrack 
\boldsymbol{\vec{y}_1}(t) 
\]
$BR
Enter your answers in terms of the variable \( t \).
$BCENTER
\{ 
mbox(
  display_matrix([[$multians1->ans_rule(20)], [$multians1->ans_rule(20)]], align=>'c'),
  " =",
  display_matrix([[$multians1->ans_rule(30)], [$multians1->ans_rule(30)]], align=>'c')
);
\}
$ECENTER


$ITEMSEP
$ITEM
Show that \( \boldsymbol{\vec{y}_2}(t) \) 
is a solution to the system 
\( \boldsymbol{\vec{y}^{\,\prime}} = P \boldsymbol{\vec{y}} \) 
by evaluating derivatives and the 
matrix product
$PAR 
\[ 
\boldsymbol{\vec{y}_2^{\,\prime}}(t) 
= 
\left\lbrack 
\begin{array}{rr} 
$P[0][0] & $P[0][1] \\ 
$P[1][0] & $P[1][1] 
\end{array}
\right\rbrack 
\boldsymbol{\vec{y}_2}(t) 
\]
$BR
Enter your answers in terms of the variable \( t \).
$BCENTER
\{ 
mbox(
  display_matrix([[$multians2->ans_rule(20)], [$multians2->ans_rule(20)]], align=>'c'),
  " =",
  display_matrix([[$multians2->ans_rule(30)], [$multians2->ans_rule(30)]], align=>'c')
);
\}
$ECENTER

\{ EndList("OL") \}

END_TEXT
Context()->normalStrings;


######################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $multians1->cmp() );
ANS( $multians2->cmp() );


COMMENT("MathObject version.  Uses parserMultiAnswer.pl and has fancy formatting of student answers.");

ENDDOCUMENT();
