#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "PGunion.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

#ProblemRandomize(when=>"Always");

TEXT(beginproblem());

$refreshCachedImages = 1;

#############################
#  Setup

Context("Numeric");
Context()->variables->are(t=>"Real");

@y0top = ();
@y0bot = ();
@c1 = ();
@c2 = ();
@x = (); # the y_1 direction
@y = (); # the y_2 direction

# correct answer
$direction = random(-1,1,2);
if ($direction == -1) {
  $y0top[0] = non_zero_random(-2,2,1);
  $y0bot[0] = 0;
} else {
  $y0top[0] = 0;
  $y0bot[0] = non_zero_random(-2,2,1);
}
$c1[0] = 0.5 * exp(1) * ( $y0top[0] - $y0bot[0]);
$c2[0] = 0.5 * exp(-1) * ( $y0top[0] + $y0bot[0]);
$x[0] = Formula("  $c1[0]  e^(-t) + $c2[0] e^(t)");
$y[0] = Formula("-($c1[0]) e^(-t) + $c2[0] e^(t)");


# incorrect answer
$y0top[1] = $y0top[0];
$y0bot[1] = $y0bot[0];
$c1[1] = 0.5 * ( $y0top[1] - $y0bot[1]);
$c2[1] = 0.5 * ( $y0top[1] + $y0bot[1]);
$x[1] = Formula("-($c1[1])  e^(-t) - $c2[1] e^(t)");
$y[1] = Formula("($c1[1]) e^(-t) - $c2[1] e^(t)");


# incorrect answer
$y0top[2] = $y0top[0];
$y0bot[2] = $y0bot[0];
$c1[2] = 0.5 * ( $y0top[2] - $y0bot[2]);
$c2[2] = 0.5 * ( $y0top[2] + $y0bot[2]);
$x[2] = Formula("  $c1[2]  e^(-3 t) + $c2[2] e^(t)");
$y[2] = Formula("-($c1[2]) e^(-3 t) + $c2[2] e^(t)");


# incorrect answer
$y0top[3] = $y0top[0];
$y0bot[3] = $y0bot[0];
$c1[3] = 0.5 * exp(1) * ( $y0top[3] - $y0bot[3]);
$c2[3] = 0.5 * exp(-1) * ( $y0top[3] + $y0bot[3]);
$x[3] = Formula("  $c1[2]  e^(t) + $c2[2] e^(-3 t)");
$y[3] = Formula("-($c1[2]) e^(t) + $c2[2] e^(-3 t)");





#
#  Graph canvas setup
#
$htmlsize = 250;
$texsize  = 450;

@gr = ();

foreach my $j (0..3) {

  $gr[$j] = init_graph(-4,-4,4,4,axes=>[0,0],size=>[$htmlsize,$htmlsize]);
  $gr[$j]->lb('reset');
  foreach my $i (1..3) {
    $gr[$j]->lb( new Label( $i,-0.1, $i,'black','center','top'));
    $gr[$j]->lb( new Label(-$i,-0.1,-$i,'black','center','top'));
    $gr[$j]->lb( new Label(-0.1, $i, $i,'black','right','middle'));
    $gr[$j]->lb( new Label(-0.1,-$i,-$i,'black','right','middle'));
    $gr[$j]->moveTo($i,-4);
    $gr[$j]->lineTo($i,4,'gray');
    $gr[$j]->moveTo(-$i,-4);
    $gr[$j]->lineTo(-$i,4,'gray');
    $gr[$j]->moveTo(-4,$i);
    $gr[$j]->lineTo(4,$i,'gray');
    $gr[$j]->moveTo(-4,-$i);
    $gr[$j]->lineTo(4,-$i,'gray');
  }
  $gr[$j]->lb( new Label(3.5,0.1,'y1','black','center','bottom'));
  $gr[$j]->lb( new Label(0.1,3.5,'y2','black','left','middle'));
  #$gr[$j]->new_color("dodgerblue",30, 144, 255); 

  if ($j == 0) {

    $f[$j] = new Fun( $x[$j]->perlFunction, $y[$j]->perlFunction, $gr[$j] );
    $f[$j]->domain(-3,3);
    $f[$j]->steps(60);
    $f[$j]->weight(2);
    $f[$j]->color('blue'); 

  } elsif ($j == 1) {

    $f[$j] = new Fun( $x[$j]->perlFunction, $y[$j]->perlFunction, $gr[$j] );
    $f[$j]->domain(-3,3);
    $f[$j]->steps(60);
    $f[$j]->weight(2);
    $f[$j]->color('blue'); 

  } elsif ($j == 2) {

    $f[$j] = new Fun( $x[$j]->perlFunction, $y[$j]->perlFunction, $gr[$j] );
    $f[$j]->domain(-3,3);
    $f[$j]->steps(60);
    $f[$j]->weight(2);
    $f[$j]->color('blue'); 

  } else {

    $f[$j] = new Fun( $x[$j]->perlFunction, $y[$j]->perlFunction, $gr[$j] );
    $f[$j]->domain(-3,3);
    $f[$j]->steps(60);
    $f[$j]->weight(2);
    $f[$j]->color('blue'); 

  }

  $fig[$j]=image(insertGraph($gr[$j]),width=>250,height=>250,tex_size=>450);

} # end setting up graphs



$k = 0; # random(0,3,1);

@perm = shuffle(4);
@fig = @fig[@perm];
@inv = invert(@perm);

@letter = ("A", "B", "C", "D");

$popup = PopUp(["Choose",@letter], $letter[$inv[$k]]);


$mc = new_multiple_choice();
$mc->qa(
"What is the approximate direction of travel
for the solution curve, as \( t \) increases from \( -\infty \) to \( +\infty \)?", 
"along the line \( y = -x \) toward the origin and then
along the line \( y = x \) away from the origin $BR"
);
$mc->extra(
"along the line \( y = x \) toward the origin and then
along the line \( y = -x \) away from the origin $BR"
);
$mc->makeLast("none of the above");


