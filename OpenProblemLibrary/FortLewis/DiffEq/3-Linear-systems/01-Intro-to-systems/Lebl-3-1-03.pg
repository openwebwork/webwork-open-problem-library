##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "parserAssignment.pl",
  "unionLists.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric");
Context()->variables->are(
t=>"Real"
);

$a = random(1,3,1);
$b = random(4,8,1);
$apb = $a + $b;
$bma = $b - $a;
$ab = $a * $b;

# char poly (r+a)(r-b)

$x0 = 0;
$y0 = random(1,9,1);

$y0a = $y0 * $a;
$y0b = $y0 * $b;

$x = Compute("-$y0/$apb e^(-$a t) + $y0/$apb e^($b t)");
$y = Compute("$y0a/$apb e^(-$a t) + $y0b/$apb e^($b t)");


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the solution to
$PAR
\[
\begin{array}{lcl}
x^{\,\prime} & = & y \\
y^{\,\prime} & = & $ab x + $bma y 
\end{array}
\]
$BR
$BR
if \( x(0) = $x0 \) and \( y(0) = $y0 \).
$BR
$BR
\( x(t) = \) 
\{ ans_rule(40) \}
\{ AnswerFormatHelp("formulas") \}
$BR
\( y(t) = \) 
\{ ans_rule(40) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;


######################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $x->cmp() );
ANS( $y->cmp() );


;

ENDDOCUMENT();

