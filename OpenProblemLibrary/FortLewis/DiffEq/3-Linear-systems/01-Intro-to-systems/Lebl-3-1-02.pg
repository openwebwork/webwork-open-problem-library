##############################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",

  "parserAssignment.pl",
  "unionLists.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric");
Context()->variables->are(
t=>"Real"
);

$x0 = random(1,9,1);
do { $y0 = random(2,8,2); } until ($y0 != $x0);

$x = Compute("($x0 + 1 - $y0/2) e^(-t) + $y0/2 e^t + t - 1")->reduce;
$y = Compute("$y0 e^t");


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the solution to
$PAR
\[
\begin{array}{lcl}
x^{\,\prime} & = & y - x + t \\
y^{\,\prime} & = & y
\end{array}
\]
$BR
$BR
if \( x(0) = $x0 \) and \( y(0) = $y0 \).
$BR
$BR
\( x(t) = \)
\{ ans_rule(40) \}
\{ helpLink("formulas") \}
$BR
\( y(t) = \)
\{ ans_rule(40) \}
\{ helpLink("formulas") \}
END_TEXT
Context()->normalStrings;


######################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $x->cmp() );
ANS( $y->cmp() );


;

ENDDOCUMENT();

