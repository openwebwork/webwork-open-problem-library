display_matrix([[$multians2->ans_rule(5)],[$multians2->ans_rule(5)]]),
'\( \Big( a_2 \cos\big( \)' . $multians2->ans_rule(5) . '\( \big) + b_2 \sin\big( \)' . $multians2->ans_rule(5) . '\( \big) \Big) \)'
