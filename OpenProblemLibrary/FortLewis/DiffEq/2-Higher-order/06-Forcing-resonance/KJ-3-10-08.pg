install_weighted_grader();

TEXT(beginproblem());


#############################
#  Setup 

Context("Numeric");
Context()->variables->are(t=>"Real");
Context()->variables->set(t=>{limits=>[-1,0]});
Context()->flags->set(
  reduceConstants => 0,
  reduceConstantFunctions => 0,
);

$m = 2;
$c = 8;
$k = 80;

$a = random(20,50,10);
$w = 8;

$F = Formula("$a e^(-t)")->reduce();

$c1 = Formula("-$a/74");
$c2 = Formula("-$a/444");
$c3 = Formula("$a/74");


$y = Formula("$c1 e^(-2t) cos(6t) + $c2 e^(-2t) sin(6t) + $c3 e^(-t)");

$yinfinity = Formula("0");


Context()->texStrings;
BEGIN_TEXT
