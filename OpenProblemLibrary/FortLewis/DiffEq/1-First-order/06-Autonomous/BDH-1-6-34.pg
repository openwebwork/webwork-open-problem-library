# DESCRIPTION
# Phase line interpretation
# ENDDESCRIPTION


## DBsubject(Differential equations)
## DBchapter(First order differential equations)
## DBsection(Equilibrium points and phase lines)
## Date(01/01/2012)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## MLT(eq_pt_01)
## Level(4)
## MO(1)
## KEYWORDS('phase line')


#######################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"PGgraphmacros.pl",
"MathObjects.pl",
"unionTables.pl",
"parserPopUp.pl",
"PGchoicemacros.pl",
);

TEXT(beginproblem());

$refreshCachedImages = 1;

#######################
#  Setup
 
Context("Numeric")->variables->are(y=>"Real");

@gr = ();
@fig = ();
@f = ();
@p = ();

$f[0] = Formula("y(y+3)*(y-2)/3");
$f[1] = Formula("-y(y+3)*(y-2)/3");
$f[2] = Formula("y(y-3)*(y+2)/3");
$f[3] = Formula("-y(y-3)*(y+2)/3");


#######################
#  The graphs of f(y)

foreach my $k (0..3) {

  $gr[$k] = init_graph(-5,-5,5,5,axes=>[0,0],pixels=>[200,200]);
  $gr[$k] -> lb('reset');

  #  manually draw the grid
  foreach my $i (-5..5) {
    $gr[$k]->moveTo($i,-5);
    $gr[$k]->lineTo($i,5,'gray',1);
    $gr[$k]->moveTo(-5,$i);
    $gr[$k]->lineTo(5,$i,'gray',1);
  }

  #  Graph labels
  $gr[$k] -> lb(new Label ( 4.25,0,'y','black','left','bottom'));
  $gr[$k] -> lb(new Label ( 0.25,4.25,'f(y)','black','left','bottom'));

  foreach my $i (1..4) {
    $gr[$k] -> lb(new Label ( $i,-0.5, $i,'black','center','middle'));
    $gr[$k] -> lb(new Label (-$i,-0.5,-$i,'black','center','middle'));
    $gr[$k] -> lb(new Label (-0.5, $i, $i,'black','center','middle'));
    $gr[$k] -> lb(new Label (-0.5,-$i,-$i,'black','center','middle'));
  }

}


add_functions($gr[0], "$f[0] for y in <-5,5> using color:blue and weight:2");
add_functions($gr[1], "$f[1] for y in <-5,5> using color:blue and weight:2");
add_functions($gr[2], "$f[2] for y in <-5,5> using color:blue and weight:2");
add_functions($gr[3], "$f[3] for y in <-5,5> using color:blue and weight:2");



#####################
#  The phase lines

$gr[4] = init_graph(-1,-5,1,5,pixels=>[60,300]);
$gr[4]->lb('reset');

$gr[4]->v_ticks(0,"black",-4,-3,-2,-1,0,1,2,3,4);

foreach my $i (-4..4) {
  $gr[4]->lb( new Label(-0.25,$i,$i,'black','right','middle'));
}
$gr[4]->lb(new Label(-0.25,4.75,'y','black','right','middle'));

$gr[4]->moveTo(0,-5);
$gr[4]->lineTo(0,5);

$gr[4]->stamps( closed_circle(0,-3,'blue',3) );
$gr[4]->stamps( closed_circle(0,2,'blue',3) );
$gr[4]->stamps( closed_circle(0,0,'blue',3) );

$gr[4]->moveTo(0,3);
$gr[4]->arrowTo(0,3.1,'blue',3);

$gr[4]->moveTo(0,1);
$gr[4]->arrowTo(0,0.9,'blue',3);

$gr[4]->moveTo(0,-1.5);
$gr[4]->arrowTo(0,-1.4,'blue',3);

$gr[4]->moveTo(0,-4);
$gr[4]->arrowTo(0,-4.1,'blue',3);




foreach my $k (0..3) {
  $fig[$k] = image(insertGraph($gr[$k]), width=>200, height=>200, 'tex_size'=>450);
}

@perm = shuffle(4);
@fig = @fig[@perm];
@inv = invert(@perm);

@letter = ("A", "B", "C", "D");

$popup = PopUp(["?","A","B","C","D"], $letter[$inv[0]]);


#######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{
ColumnTable(
"A phase line for an autonomous differential 
equation \[ \frac{dy}{dt} = f(y) \]
is shown below.  Make a rough sketch of the 
corresponding function \( f(y) \).
$BR
$BR
Which graph A-D most closely matches 
the graph you drew? ".  
$popup->menu().
$BR.
$BR.
$BCENTER.
image(insertGraph($gr[4]), width=>60, height=>300, 'tex_size'=>100).
$ECENTER
,
BeginTable().
  AlignedRow([$fig[0],$fig[1]]).
  TableSpace(5,0).
  AlignedRow(["A","B"]).
  TableSpace(25,6).
  AlignedRow([$fig[2],$fig[3]]).
  TableSpace(5,0).
  AlignedRow(["C","D"]).
EndTable()
,
indent => 0, separation => 30, valign => "TOP"
);
\}
END_TEXT
Context()->normalStrings;

########################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( $popup->cmp() );

COMMENT('MathObject version');
ENDDOCUMENT();
