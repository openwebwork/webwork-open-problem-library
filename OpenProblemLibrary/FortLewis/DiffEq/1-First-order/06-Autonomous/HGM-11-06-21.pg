ANS( Compute("r-kQ")->cmp() );
ANS( Compute("(r/k)*(1 - e^(-k*t))")->cmp() );
ANS( Compute("(r/k)")->cmp() );

$gr = init_graph(0,0,5,2,'axes'=>[0,0],'grid'=>[1,1]);
