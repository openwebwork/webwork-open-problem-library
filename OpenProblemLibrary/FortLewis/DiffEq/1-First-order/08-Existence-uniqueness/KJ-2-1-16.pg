$BR
\{ ans_rule(30) \}
\{ AnswerFormatHelp("inequalities") \}

\{ EndList("OL") \}
END_TEXT
Context()->normalStrings;


############################
#  Answers

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );
ANS( $interval[0]->cmp() );
ANS( $interval[1]->cmp() );

COMMENT("MathObject version.");

ENDDOCUMENT();
