##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup 

Context("Numeric")->variables->are(t=>"Real");

$y0 = random(3,9,1);

$J = $y0 - 1;

$answer1 = Compute("1 + $J e^(cos(t)-1)");
$answer2 = Compute("-1 + $J e^(cos(t)-1) + 2 e^(cos(t)+1)");

$left_hand_side = "y(t)";
$top_limits = "0 \leq t \leq \pi";
$bot_limits = "\pi < t \leq 2\pi";

#
#  Display the answer blanks properly in different modes
#
Context()->texStrings;
if ($displayMode eq 'TeX') {
   $piecewise =
   "\(\displaystyle $left_hand_side = \left\lbrace".
   "\begin{array}{c}".
   ans_rule(40). 
   "\mbox{ if } $top_limits, \\". 
   ans_rule(40). 
   "\mbox{ if } $bot_limits.".
   "\end{array}".
   "\right.". 
   '\)';
  } else {
   $piecewise = 
   BeginTable(center=>0).
     Row([
       "\( $left_hand_side =\) ".
       '\( \displaystyle \Bigg\lbrace \)',
       ans_rule(40).$SPACE."\( \mbox{ if } $top_limits, \)".
       $BR.$BR.
       ans_rule(40).$SPACE."\( \mbox{ if } $bot_limits. \)"
       ],separation=>1).
   EndTable();
}
Context()->normalStrings;



#############################
#  Main text 

Context()->texStrings;
BEGIN_TEXT
Find a solution to the initial value problem
$PAR
\[
y^{\,\prime} + \sin(t) y = g(t), 
\ \ \
y(0) = $y0,
\]
$BR
that is continuous on the interval 
\( \lbrack 0, 2\pi \rbrack \)
where
$PAR
\[
g(t) =
\left\lbrace
\begin{array}{rcl}
\sin(t) && \mathrm{if} \ 0 \leq t \leq \pi, \\
-\sin(t) && \mathrm{if} \ \pi < t \leq 2\pi.
\end{array}
\right.
\]
$BR
$BR
$piecewise
END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation 

$showPartialCorrectAnswers = 1;

ANS( $answer1->cmp() );
ANS( $answer2->cmp() );

;

ENDDOCUMENT();
