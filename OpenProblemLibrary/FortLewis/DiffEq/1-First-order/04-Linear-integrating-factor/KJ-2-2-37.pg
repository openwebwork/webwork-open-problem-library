##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"unionLists.pl",
"parserAssignment.pl",
);

TEXT(beginproblem());


#############################
#  Setup 

Context("Numeric")->variables->are(
t=>"Real",
y=>"Real",
);
parser::Assignment->Allow;

do {

  $k = random(3,6,1);
  $k1 = $k - 1;
  $y0= non_zero_random(-5,5,1);
  $num = $y0 * $k1 + $k1 - 1;

} until ($num != 0);
$den = $k1;

$answer = Compute("y = (1/$k1) e^(-t) - 1 + ($num/$den) e^(-$k t)");

$limit = Real("-1");


#############################
#  Main text 

Context()->texStrings;
BEGIN_TEXT
\{ BeginList("OL",type=>'a') \}
$ITEM
Find the solution to the initial value problem
\[
\frac{y^{\,\prime} - e^{-t} + $k}{y} = -$k,
\ \ \
y(0) = $y0.
\]
$BR
\{ ans_rule(50) \}
\{ AnswerFormatHelp("equations") \} 

$ITEMSEP
$ITEM
Discuss the behavior of the solution \( y(t) \) 
as \( t \) becomes large.  Does \( \displaystyle
\lim_{t \to \infty} y(t) \) exist?  If the limit 
exists, enter its value.  If the limit does 
not exist, enter ${BITALIC}DNE${EITALIC}.
$BR
$BR
\( \displaystyle \lim_{t \to \infty} y(t) = \)
\{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \} 

\{ EndList("OL") \}
END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation 

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ANS( $limit->cmp() );

COMMENT("MathObject version.");

ENDDOCUMENT();
