##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric");

$k = random(2,5,1);
do { $t = random(2,8,1); } until ($t != $k);

$kt = $k * $t;

$y0 = Compute("1 / $kt");


#############################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Consider the initial value problem
$PAR
\[
y^{\,\prime} = $k y^2, 
\ \ \
y(0) = y_0.
\]
$BR
For what value(s) of \( y_0 \) will the solution
have a vertical asymptote at \( t = $t \) and
a \(t\)-interval of existence \( -\infty < t < $t \)?
$BR
$BR
\( y_0 = \)
\{ ans_rule(30) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;



##############################
#  Answer evaluation 

ANS( $y0->cmp() );

;

ENDDOCUMENT();
