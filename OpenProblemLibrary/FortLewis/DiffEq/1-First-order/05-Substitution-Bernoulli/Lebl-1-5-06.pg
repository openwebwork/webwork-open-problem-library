##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"parserAssignment.pl",
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric");
Context()->variables->are(
x=>"Real",y=>"Real"
);
parser::Assignment->Allow;

$x0 = 2;
$y0 = random(1,5,1);
$c = 4 * ($y0**2 - 2);

$answer = Formula("y = sqrt( x^2/2 + $c/(x^2) )")->reduce()->with(limits=>[1,2]); 


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the initial value problem
\( \displaystyle y^{\,\prime} = \frac{x^2-y^2}{xy} \)
with \( y($x0) = $y0 \).
$BR
$BR
\{ ans_rule(30) \}
\{ AnswerFormatHelp("equations") \}
END_TEXT
Context()->normalStrings;


######################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

COMMENT("MathObject version.");

ENDDOCUMENT();
