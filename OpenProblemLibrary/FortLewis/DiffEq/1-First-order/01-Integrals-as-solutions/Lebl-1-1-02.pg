## KEYWORDS('differential equations','first order','integrals as solutions')


##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGunion.pl",
"answerHints.pl",
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric")->variables->are(
x=>"Real", dx=>"Real",
t=>"Real", dt=>"Real",
);

$a = random(1,5,1);
$ya = random(6,20,1);

$fx = Formula("x^2 + x"); 
$ft = $fx->substitute(x=>'t');   

$fname = "y(x)";
$dummyvar = "t";
$indvar = "x";

#
#  Display the answer blanks properly in different modes
#
Context()->texStrings;
if ($displayMode eq 'TeX') {
   $integral =
   "\(\displaystyle $fname = ".
   ans_rule(4). 
   "+ \int_{$dummyvar = ". 
   ans_rule(4). 
   "}^{$dummyvar = ". 
   ans_rule(4).
   '}'. 
   ans_rule(20).
   '\)';
  } else {
   $integral =
   BeginTable(center=>0).
     Row([
       "\($fname=\) ".ans_rule(4).' \(+\displaystyle\int\)',
       "\( $dummyvar = \) ".ans_rule(4).$BR.$BR."\( $dummyvar = \) ".ans_rule(4),
       ans_rule(20)],separation=>2).
   EndTable();
}
Context()->normalStrings;


#############################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{ BeginList('OL',type=>'a') \}

$ITEM Set up an integral for solving 
\( \displaystyle \frac{dy}{dx} = x^2 + x \)
when \( y($a) = $ya \).
$BR
$BR
$integral

$ITEMSEP
$ITEM Evaluate your answer to the previous part 
to find \( y(x) \).
$BR
$BR
\( $fname = \)
\{ ans_rule(40) \}
\{ AnswerFormatHelp("formulas") \}

\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;


############################
#  Answers

$showPartialCorrectAnswers = 1;

ANS( Compute("$ya")->cmp() );
ANS( Compute("x")->cmp() );
ANS( Compute("$a")->cmp() );
ANS( Compute("$ft * dt")->cmp()
->withPostFilter(AnswerHints( 
  [Formula("$fx"),Formula("$fx*dx"),Formula("x^2+x*dx")] => 
  "Are you using the correct variable?",
  Formula("$ft") => "Don't forget the differential dt", 
  Formula("t^2 + t*dt") => "Don't forget parentheses", 
))
);

ANS( Compute("$ya + (x^3/3 + x^2/2) - ($a^3/3 + $a^2/2)")->cmp() );

COMMENT("MathObject version.");

ENDDOCUMENT();
