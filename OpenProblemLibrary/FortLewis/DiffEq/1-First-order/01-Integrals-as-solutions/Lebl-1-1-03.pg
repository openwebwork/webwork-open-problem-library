## KEYWORDS('differential equations','first order','integrals as solutions')


##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGunion.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric")->variables->are(
x=>"Real", dx=>"Real",
t=>"Real", dt=>"Real",
);

$a = 0;
$ya = non_zero_random(-10,10,1);
$k = random(2,9,1);

$fx = Formula("sin($k x)"); 
$ft = $fx->substitute(x=>'t');   

$fname = "y(x)";
$dummyvar = "t";
$indvar = "x";

#
#  Display the answer blanks properly in different modes
#
Context()->texStrings;
if ($displayMode eq 'TeX') {
   $integral =
   "\(\displaystyle $fname = ".
   ans_rule(4). 
   "+ \int_{$dummyvar = ". 
   ans_rule(4). 
   "}^{$dummyvar = ". 
   ans_rule(4).
   '}'. 
   ans_rule(20).
   '\)';
  } else {
   $integral =
   BeginTable(center=>0).
     Row([
       "\($fname=\) ".ans_rule(4).' \(+\displaystyle\int\)',
       "\( $dummyvar = \) ".ans_rule(4).$BR.$BR."\( $dummyvar = \) ".ans_rule(4),
       ans_rule(20)],separation=>2).
   EndTable();
}
Context()->normalStrings;


#############################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{ BeginList('OL',type=>'a') \}

$ITEM Set up an integral for solving 
\( \displaystyle \frac{dy}{dx} = $fx \)
when \( y($a) = $ya \).
$BR
$BR
$integral

$ITEMSEP
$ITEM Evaluate your answer to the previous part 
to find \( $fname \).
$BR
$BR
\( $fname = \)
\{ ans_rule(40) \}
\{ AnswerFormatHelp("formulas") \}

\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;


############################
#  Answers

$showPartialCorrectAnswers = 1;

ANS( Compute("$ya")->cmp() );
ANS( Compute("x")->cmp() );
ANS( Compute("$a")->cmp() );
ANS( Compute("$ft * dt")->cmp()
->withPostFilter(AnswerHints( 
  [Formula("$fx"),Formula("$fx*dx")] => 
  "Are you using the correct variable?",
  Formula("$ft") => "Don't forget the differential dt", 
))
);

ANS( Compute("$ya - cos($k x)/$k + 1/$k")->cmp() );

;

ENDDOCUMENT();
