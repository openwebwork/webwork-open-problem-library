  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric");
Context()->variables->set(x=>{limits=>[0,4]});

$a = random(2,9,1);
$ap1 = $a + 1;

$answer = Compute("-sin(x) + $ap1 x");


#############################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve \( y^{\,\prime\prime} = \sin(x) \) if \( y(0) = 0 \) 
and \( y'(0) = $a \).
$BR
$BR
\( y(x) = \)
\{ ans_rule(30) \} 
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;


############################
#  Answers

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

;

ENDDOCUMENT();
