##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric")->variables->add(
t=>"Real"
);

Context()->flags->set(
  reduceConstants=>0, # no decimals
  reduceConstantFunctions=>1, # combine 4+5*2?
  formatStudentAnswer=>'parsed', # no decimals
);

$a = random(0,1,1);
if ($a==0) {
  $y = Formula("sin(t)");
} else {
  $y = Formula("cos(t)");
}

$yt = $y->D('t');

$answer[0] = Formula("($yt)^2");
$answer[1] = Formula("1-($y)^2");

#############################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Show that \( y = $y \) is a solution to 
\( \displaystyle 
\left(
\frac{dy}{dt}
\right)^2
=
1 - y^2
\).  Enter your answers below in terms of 
the independent variable \( t \) in the order
in which the terms were given.  Be sure you 
can justify your answer.
$BR
$BR
\{ ans_rule(20) \} = \{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;


############################
#  Answers

$showPartialCorrectAnswers = 1;

foreach my $i (0..1) {
  ANS( $answer[$i]->cmp() );
}

;

ENDDOCUMENT();
