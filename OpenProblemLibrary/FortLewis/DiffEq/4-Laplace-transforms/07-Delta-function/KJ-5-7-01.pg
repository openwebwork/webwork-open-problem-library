##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGunion.pl",
  "answerHints.pl",
  "parserAssignment.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup1

Context("Numeric");
Context()->variables->are(
t=>"Real"
);

$a = random(1,6,1);
$b = random(1,9,1);
$c = random(2,5,1);
$d = random(7,10,1);

$ft = Compute("$b + e^(-$a*t)")->reduce;

$answera = $ft->eval(t=>$c);
$answerb = Compute("0");
$answerc = $ft->eval(t=>0);


#############################
#  Main text1

Context()->texStrings;
BEGIN_TEXT

Evaluate the following:

\{ BeginList('OL', type=>'a') \}

$ITEM \( \displaystyle \int_{-1}^6 ($ft)\, \delta(t-$c) \ dt = \)
\{ ans_rule(20) \}

$ITEMSEP
$ITEM  \( \displaystyle \int_{-1}^6 ($ft)\, \delta(t-$d) \ dt = \)
\{ ans_rule(20) \}

$ITEMSEP
$ITEM  \( \displaystyle \int_{-1}^6 ($ft)\, \delta(t) \ dt = \)
\{ ans_rule(20) \}

\{ EndList('OL', type=>'a') \}
END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation1

$showPartialCorrectAnswers = 1;

ANS( $answera->cmp() );
ANS( $answerb->cmp() );
ANS( $answerc->cmp() );

ENDDOCUMENT();
