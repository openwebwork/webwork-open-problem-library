## MLTleader(1)
## Level(3)
## MO(1)
## TitleText1('Elementary Differential Equations')
## AuthorText1('Kohler and Johnson')
## EditionText1('2006')
## Section1('5.2')
## Problem1('19')
## KEYWORDS('Laplace transform')


##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGunion.pl",
  "answerHints.pl",
  "parserAssignment.pl",
  "parserFunction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup1

Context("Numeric");
Context()->variables->are(
t=>"Real",
s=>"Real"
);

# Redefine the Heaviside function so the answer checker will work on [-1,1].
parserFunction("h(t)" => "1.5 * cos(e*t) + 5*pi/3 + arctan(t)");

$a = random(1, 4, 1);
do { $b = random(1, 4, 1); } until ( $b != $a );
$c = random(1, 9, 1);
do { $d = non_zero_random(-5, 5, 1); } until ($d != $b );

$Fs = Formula("($c*s+(-$c*$a + $d))/(s^2 -2*$a*s +($a^2 + $b^2))")->reduce;

$answer = Compute("$c*e^($a*t)*cos($b*t) + $d/$b*e^($a*t)*sin($b*t)")->reduce;


#############################
#  Main text1

Context()->texStrings;
BEGIN_TEXT

Find the inverse Laplace transform \( f(t) = {\mathcal L}^{-1} \left\lbrace F(s) \right\rbrace \) of the function \( \displaystyle F(s) = $Fs \).
$BR
$BR
\( \displaystyle f(t) = {\mathcal L}^{-1} \left\lbrace $Fs \right\rbrace = \)
\{ ans_rule(50) \}
\{ AnswerFormatHelp("formulas") \}

END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation1

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

ENDDOCUMENT();
