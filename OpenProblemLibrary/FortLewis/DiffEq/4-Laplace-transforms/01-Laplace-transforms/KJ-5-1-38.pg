##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGunion.pl",
  "answerHints.pl",
  "parserAssignment.pl",
  "contextInequalities.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup1

Context("Numeric");
Context()->variables->are(
t=>"Real",
s=>"Real"
);

$a = random(1, 9, 1);
$b = random(1, 9, 1);

$Fs = Formula("2*$a*s/(s^2 - $b^2)")->reduce;

$answera = Compute("$a*e^(-$b*t) + $a*e^($b*t)")->reduce;


#############################
#  Main text1

Context()->texStrings;
BEGIN_TEXT

Find the inverse Laplace transform 
\( f(t) = {\mathcal L}^{-1} \left\lbrace F(s) \right\rbrace \) 
of the function \( \displaystyle F(s) = $Fs \).
$BR
$BR
\( \displaystyle f(t) = {\mathcal L}^{-1} 
\left\lbrace $Fs \right\rbrace = 
{\mathcal L}^{-1} \left\lbrace \frac{$a}{s+$b} + \frac{$a}{s-$b} \right\rbrace = \)
\{ ans_rule(20) \}
\{ AnswerFormatHelp("formulas") \}

END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation1

$showPartialCorrectAnswers = 1;

ANS( $answera->cmp() );

ENDDOCUMENT();
