##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGunion.pl",
  "answerHints.pl",
  "parserAssignment.pl",
  "parserFunction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup1

Context("Numeric");
Context()->variables->are(
t=>"Real"
);

# Redefine the Heaviside function so the answer checker will work on [-1,1].
parserFunction("h(t)" => "1.5 * cos(e*t) + 5*pi/3 + arctan(t)");

$a = random(1, 5, 1);
$b = random(6, 10, 1);
$c = $a + ($b-$a)/2;
$d = random(2, 6, 1);

$ft = Formula("$d*t*(h(t - $a) - h(t-$b))")->reduce;

$answera1 = Compute("0");
$answera2 = Compute("$d*t")->reduce;
$answera3 = Compute("0");
$answerb = Compute("$d*$c")->reduce;

#
#  Display the answer blanks properly in different modes
#
Context()->texStrings;
if ($displayMode eq 'TeX') {
   $function =
   "\(\displaystyle $ft = \left\lbrace".
   "\begin{array}{c}".
   ans_rule(10). "\mbox{ \ if \ }  0 \leq t < $a, \\". 
   ans_rule(10). "\mbox{ \ if \ } $a \leq t < $b, \\".
   ans_rule(10). "\mbox{ \ if \ } $b \leq t < \infty.".
   "\end{array}".
   "\right.". 
   '\)';
  } else {
   $function =
   BeginTable(center=>0).
     Row([
       "\($ft = \displaystyle \Bigg\lbrace\)",
       ans_rule(10)." if \(  0 \leq t < $a, \)".$BR
      .ans_rule(10)." if \( $a \leq t < $b, \)".$BR
      .ans_rule(10)." if \( $b \leq t < \infty. \)"
       ],separation=>1).
   EndTable();
}
Context()->normalStrings;


#############################
#  Main text1

Context()->texStrings;
BEGIN_TEXT
\{ BeginList('OL', type=>'a') \}

$ITEM Graph the function \( f(t) = $ft \) for \(0 \leq  t < \infty \).  Use your graph to write this function piecewise as follows:
$BR
$BR
$function
\{ AnswerFormatHelp("formulas") \}

$ITEMSEP
$ITEM Evaluate \( f($c) \).
$BR
$BR
\( \displaystyle f($c) = \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("formulas") \}
$BR

\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation1

$showPartialCorrectAnswers = 1;

ANS( $answera1->cmp() );
ANS( $answera2->cmp() );
ANS( $answera3->cmp() );
ANS( $answerb->cmp() );


ENDDOCUMENT();
