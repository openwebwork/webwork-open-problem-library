##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGunion.pl",
"answerHints.pl",
"parserAssignment.pl",
"PGchoicemacros.pl",
"parserPopUp.pl"
);

TEXT(beginproblem());


#############################
#  Setup1

Context("Numeric");
Context()->variables->are(
t=>"Real"
);

$a = random(2, 6, 1);
$b = random(1, 7, 1);

$ft = Formula("t^$a*e^(-$b*t)");

$mc = new_multiple_choice();
$mc->qa("The function \( f(t) \) is", "continuous on \( 0\leq t < \infty \)."); 
$mc->makeLast("continuous on \( 0\leq t < \infty \).","discontinuous but piecewise continuous on \( 0\leq t < \infty \).","neither.");

$popup1 = PopUp(
   ["?", "yes", "no"], 
  "yes"
);

$popup2 = PopUp(
   ["?", "yes", "no"], 
  "yes"
);

#############################
#  Main text1

Context()->texStrings;

BEGIN_TEXT

Consider \( f(t) = $ft \).
$BR

\{ BeginList('OL', type=>'a') \}

$ITEM
\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}

$ITEMSEP
$ITEM
Is \( f(t) \) exponentially bounded on \( 0\leq t < \infty \)?
\{ $popup1-> menu() \}

$ITEMSEP
$ITEM
Does the Laplace transform of \( f(t) \) exist (on some domain, i.e., for some values of s)?
\{ $popup2-> menu() \}

\{ EndList('OL') \}
END_TEXT

Context()->normalStrings;


##############################
#  Answer evaluation1

$showPartialCorrectAnswers = 1;

ANS( radio_cmp( $mc->correct_ans() ) );
ANS( $popup1->cmp() );
ANS( $popup2->cmp() );

ENDDOCUMENT();