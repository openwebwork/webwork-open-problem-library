DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


###################################
#  Setup

Context("Numeric")->variables->are(t=>"Real");

$a = random(1,4,1);
$b = $a + random(2,4,1);
$k = random(2,5,1);
$k2 = 2 * $k;
$j = random(2,5,1);

$F = Formula("$k * t^2 + $j * t");

$Ftex = "$k t^2 + $j t";
$ftex = "$k2 t + $j";



$answer1 = $F->D('t');
$answer2 = ($F->eval(t=>$b))-($F->eval(t=>$a));

$ans_eval1 = $answer1->cmp();
$ans_eval2 = $answer2->cmp();


###################################
#  Main text part 1
BEGIN_TEXT
${BBOLD}Part 1 of 2:${EBOLD}
$BR
$BR
This is a multi-part problem.  If \( F(t) = $Ftex \), find \( F^{\prime}(t) \).
$BR
$BR
\( F^{\prime}(t) = \) \{ ans_rule(20) \}
END_TEXT



######################################
#  Begin do not edit

ANS($ans_eval1 );

$ans_hash1 = $ans_eval1->evaluate($inputs_ref->{ANS_NUM_TO_NAME(1)});

if (1 == $ans_hash1->{score}) {


#  End do not edit
#######################################

BEGIN_TEXT
$PAR
$HR
${BBOLD}Part 2 of 2:${EBOLD} 
$BR
$BR
Evaluate the following integral using the Fundamental Theorem of Calculus.
$BR
$BR
\( \displaystyle \int_{$a}^{$b} $ftex \, dt  = \)
\{ ans_rule(20) \}
END_TEXT

ANS($ans_eval2 );

}

COMMENT("This is a multi-part problem in which the next part is revealed only after the previous part is correct.");

COMMENT('MathObject version');
ENDDOCUMENT();
