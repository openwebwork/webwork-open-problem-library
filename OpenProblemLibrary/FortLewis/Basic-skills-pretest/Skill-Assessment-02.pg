DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$c = random(3,6,1);
$x = ($c+1);
$y = $c;

$answer = Real("-($x)");

Context()->operators->undefine("+","-","*","/","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

If \( a-b = $c \), then \( (a - $x) - (b + $y) = \) 
\{ans_rule(10)\}

$BR
$BR
$HR
Note: Your answer should be completely simplified.
Unsimplified answers will not be accepted.

END_TEXT
Context()->normalStrings;

##################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS($answer->cmp());


;
ENDDOCUMENT();
