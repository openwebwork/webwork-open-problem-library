DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
Context()->variables->add(t=>"Real");
#Context("Fraction-NoDecimals");

$a = random(2,6,1);
$b = random(2,3,1);

$f = Formula("$a - $b * t**2");

$g = Formula("t+1");

#$answer = $f->substitute(t=>$g)->reduce;

$answer1 = Real("-1 * $b");
$answer2 = Real("-2 * $b");
$answer3 = Real("$a - $b");

Context()->operators->undefine("+","-","*","/","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Let \( f(t) = $f.\)  Evaluate \( f($g) \).
$BR
$BR
\( f($g) = \) 
\{ans_rule(5)\}
\( t^2 + \)
\{ans_rule(5)\}
\( t + \)
\{ans_rule(5)\} 

$BR
$BR
$HR
Note: Your answer should be completely simplified.
Unsimplified answers will not be accepted.  

END_TEXT
Context()->normalStrings;

##################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS($answer1->cmp() );
ANS($answer2->cmp() );
ANS($answer3->cmp() );



;
ENDDOCUMENT();
