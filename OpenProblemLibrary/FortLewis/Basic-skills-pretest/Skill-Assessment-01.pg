## DBsubject(Arithmetic)
## DBchapter(Integers)
## DBsection(Addition/subtraction)
## Level(3)
## MO(1)
DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a = random(3,7,1);
$ap1 = $a + 1;
$am1 = $a - 1;

$answer = Real("-($ap1)-($am1)");

Context()->operators->undefine("+","-","*","/","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate:
\( ($a - $ap1) - ($am1 + $a) = \)
\{ans_rule(40)\}

$BR
$BR
$HR
Note: Your answer should be completely simplified.
Unsimplified answers will not be accepted.

END_TEXT
Context()->normalStrings;

##################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS($answer->cmp());


;
ENDDOCUMENT();
