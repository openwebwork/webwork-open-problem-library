## DBsubject(Algebra)
## DBchapter(Rational equations and functions)
## DBsection(Simplifying)
## Level(3)
DOCUMENT();  

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#################################
#  Setup

$a = random(2,5,1);
$aa = $a * $a;
$b = $a + 1;

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Select ${BBOLD}all${EBOLD} expressions that are equivalent to  
\[ \displaystyle y + \frac{y}{$a} + \frac{$a}{y}. \]  
There may be more than one correct answer.", 
"\( \displaystyle \frac{$b y^2 + $aa}{$a y} \)$BR",
"\( \displaystyle \frac{$b y}{$a} + \frac{$a}{y} \)$BR",                
);
$mc -> extra(
"\( \displaystyle \frac{y^2 + $aa}{$a y } \)$BR",
"\( \displaystyle y + $a \)$BR",
"\( \displaystyle \frac{2y + $a}{$a + y} \)$BR",
);
#$mc->makeLast("None of the above");


###################################
#  Main text

BEGIN_TEXT

\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}

END_TEXT


##################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp( $mc->correct_ans() ) );

ENDDOCUMENT();
