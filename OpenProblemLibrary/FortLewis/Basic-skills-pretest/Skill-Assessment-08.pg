## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Scientific notation)
## Level(3)
## MO(1)
## MLT(Mult_scientific)
DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
#Context("Fraction-NoDecimal");

$a = random(3,6,1);
$b = $a - 1;

$c = 10 * $a * $b;
$answer = Real("$c");

#Context()->operators->undefine("+","-","*","/","**","^");
#Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate: \( ($a \times 10^{-$b}) \times ($b \times 10^{$a}) = \)
\{ans_rule(20)\}

$BR
$BR
$HR
Note: Your answer should be completely simplified.
Unsimplified answers will not be accepted. 
Scientific notation will not be accepted.

END_TEXT
Context()->normalStrings;

##################################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS($answer->cmp());


;
ENDDOCUMENT();
