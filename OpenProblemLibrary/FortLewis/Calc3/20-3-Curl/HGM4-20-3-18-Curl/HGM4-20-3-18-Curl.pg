#  Answer evaluation

$showPartialCorrectAnswers = 1;

sub mycheck {
  my ($correct, $student, $ansHash) = @_;

  if ( 
       ($correct . i == $student . i) &&  
       ($correct . j == $student . j) && 
       ($correct . k == $student . k)        
     ) { return 1; } else { return 0; }
}

ANS(custom_cmp( $answera, ~~&mycheck, showCoordinateHints=>1 ) );

