DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");
Context()->flags->set( ijk=>1 );

$a = random(2,5,1);
$b = $a + random(2,4,1);
$c = random(1,9,1);

$select = random(0,1,1);

if ($select == 0) {
$A = Point($a,$c);
$B = Point($b,$c);
} else {
$A = Point($c,$a);
$B = Point($c,$b);
}

$answer = Real("$b**2 / 2 - $a**2 / 2")->reduce;

Context()->texStrings;
BEGIN_TEXT

Sketch the vector field \( \vec{F}(x,y) = x \vec{i} + y \vec{j} \) and
calculate the line integral of \( \vec{F} \) along  
the line segment from \( $A \) to \( $B .\)
$BR
\{ans_rule(30)\}

END_TEXT
Context()->normalStrings;


##################################################
#  Answers

ANS($answer->cmp);

$showPartialCorrectAnswers = 1;


;
ENDDOCUMENT();
