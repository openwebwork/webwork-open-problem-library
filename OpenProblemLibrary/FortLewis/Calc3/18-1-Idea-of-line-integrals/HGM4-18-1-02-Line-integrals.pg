);
foreach my $r (1.5,3.5) {
  my $fn = new Fun( sub { my $t=shift(); return $r * cos($t); }, sub { my $t=shift(); return $r * sin($t);}, $gr[1] );
  $fn->domain(1.5708,6.2832);
  $fn->color("red");
}
