##DESCRIPTION
##  Line integrals via parametrization
##ENDDESCRIPTION


## DBsubject(Calculus - multivariable)
## DBchapter(Calculus of vector fields)
## DBsection(Line integrals)
## Date(10/31/09)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## Level(4)
## MO(1)
## TitleText1('Calculus')
## AuthorText1('Hughes-Hallett')
## EditionText1('4')
## Section1('18.2')
## Problem1('19')
## TitleText2('Calculus')
## AuthorText2('Hughes-Hallett')
## EditionText2('5')
## Section2('18.2')
## Problem2('19')
## KEYWORDS('Line integrals','Path integrals')

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"parserVectorUtils.pl",
"PGcourse.pl",
"LiveGraphicsParametricCurve3D.pl",
"LiveGraphicsVectorField3D.pl",
"unionTables.pl",
"parserPopUp.pl",
"weightedGrader.pl",
);

install_weighted_grader();

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
Context()->variables->are(x=>"Real",y=>"Real",z=>"Real",t=>"Real");

$a = list_random(0.5,1,1.5,2);
$b = random(2,5,1);
$c = random(3,6,1);

$s = random(-1,1,2);


if ($s == 1) {
  $F = "-y\vec{i} + x\vec{j} + $a\vec{k}";
  $popup = PopUp(["?","positive","negative","zero"],"positive");
  $imagename = "up.png";
} else {
  $F = "y\vec{i} - x\vec{j} - $a\vec{k}";
  $popup = PopUp(["?","positive","negative","zero"],"negative");
  $imagename = "down.png";
}

$vf = VectorField3D(
Fx => Formula("-1*$s*y"),
Fy => Formula("$s*x"),
Fz => Formula("$s*$a"),
xvar => 'x',
yvar => 'y',
zvar => 'z',
xmin => -$b,
xmax =>  $b,
ymin => -$b,
ymax =>  $b,
zmin =>   0,
zmax =>  $c*pi/$b,
xsamples => 4,
ysamples => 4,
zsamples => 4,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
vectorcolor => "RGBColor[0.0,0.0,1.0]",
vectorscale => 0.2,
vectorthickness => 0.01,
outputtype => 1,
);


$helix = ParametricCurve3D(
Fx => Formula("$b*cos(t)"),
Fy => Formula("$b*sin(t)"),
Fz => Formula("t/$b"),
tvar => "t",
tmin =>  0,
tmax =>  $c*pi,
tsamples => 50,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
curvecolor => "RGBColor[1.0,0.0,0.0]",
curvethickness => "0.01",
outputtype => 1,
);


$plot = $beginplot . 
"{" . 
$helix . 
"," . 
$vf .
"}" . 
",Axes->True,AxesLabel->{X,Y,Z}" . 
$endplot;

$answer = Compute("$s * $c * pi * ($b^2 + $a/$b)")->reduce;


##########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{ 
ColumnTable(
"Suppose \( \vec{F}(x,y,z) = $F \) and 
\( C \) is the helix given by \( x(t) = $b \cos(t) \),
\( y(t) = $b \sin(t) \), \( z(t) = t/$b \) for 
\( 0 \leq t \leq $c \pi \).".
$BR.
$BR.
"(a) From the graph, do you expect the line
integral of \( \vec{F} \) along the helix \( C \) 
to be positive, negative, or zero? ".$popup->menu().
$BR.
$BR.
"(b) Find the line integral of \( \vec{F} \) along 
the helix \( C \).".
$BR.
"\( \displaystyle \int_C \vec{F} \cdot d\vec{r} \) = ".ans_rule(30),
$BCENTER.
Live3Ddata(
$plot,
image => alias($imagename), 
size => [400,400],
tex_size => 600,
tex_center => 1,
scale => 1.1,
).
$ECENTER,
indent=>"0", separation=>"30", valign=>"TOP"
);
\}
END_TEXT
Context()->normalStrings;


##################################################
#  Answers

$showPartialCorrectAnswers = 1;

WEIGHTED_ANS($popup->cmp(), 5 );
WEIGHTED_ANS($answer->cmp(), 95 );

COMMENT("Uses interactive graphics generated on-the-fly");


COMMENT('MathObject version');
ENDDOCUMENT();