DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

TEXT( beginproblem() );

Context("Vector2D");
Context()->variables->are(t=>"Real");
#Context()->variables->set(t=>{limits=>[-5,5]});

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);
$d = random(2,9,1);

$x   = Formula("$a*t");
$xt  = $x->D('t');
$xtt = $xt->D('t');

$y   = Formula("$b*t^3-$c*t^2");
$yt  = $y->D('t');
$ytt = $yt->D('t');

$vel = Vector("<$xt,$yt>");
$acc = Vector("<$xtt,$ytt>");


################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT
Suppose the position of a particle in motion at time
\( t \) is given by the vector parametric equation
\( \vec{r}(t) = \langle $x, $y \rangle \).
$BR
$BR
(a) Find the velocity of the particle at time \( t \).
$BR
\( \vec{v}(t) \) = \{ans_rule(40)\}
$BR
$BR
(b) Find the acceleration of the particle at time \(t\).
$BR
\( \vec{a}(t) \) = \{ans_rule(40)\}
END_TEXT
Context()->normalStrings;

######################
#  Answer evaluators

$showPartialCorrectAnswers = 1;

ANS($vel->cmp());
ANS($acc->cmp());


;
ENDDOCUMENT();
