DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#####################################
#  Setup

Context("Numeric");

$d = random(2,10,1);
$e = random(2,10,1);

$b = Real("1");
$c = Real("$e");
$m = Real("$d");

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Which of the constants can be determined?  Select all that apply.", 
"The constant \( a \)",
);
#$mc -> extra();
$mc -> makeLast(
"The constant \( a \)",
"The constant \( b \)",
"The constant \( c \)",
"The constant \( m \)",
);


########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Let 
\(
\vec{F} = 
\langle 
a x + b y + $d z, \,
x + c z, \, 
$e y + m x
\rangle
\)
where \( a, b, c, m \) are constants.
$BR
$BR
(a)  Suppose the flux of \( \vec{F} \) through any
closed surface is zero.
\{ $mc->print_q \}
\{ $mc->print_a \}
$BR
(b) Suppose instead that the circulation around
any closed curve is zero.  Then
$BR
\( b \) = \{ ans_rule(10) \}
$BR
\( c \) = \{ ans_rule(10) \}
$BR
\( m \) = \{ ans_rule(10) \}
END_TEXT
Context()->normalStrings;


###############################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp( $mc->correct_ans() ) );

ANS($b->cmp() );
ANS($c->cmp() );
ANS($m->cmp() );


;
ENDDOCUMENT();
