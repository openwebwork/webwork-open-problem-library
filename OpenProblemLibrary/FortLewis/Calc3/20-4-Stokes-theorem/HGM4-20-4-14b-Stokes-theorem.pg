DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#####################################
#  Setup

Context("Numeric");

SRAND($psvn);

$a = random(2,7,1);
$b = random(2,7,1);
$c = random(2,7,1);

$d = random(1,9,1);
$e = random(1,9,1);
$f = random(1,9,1);


$r = random(3,8,1);

$answer = Compute("-$a * pi * $r^2");


########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Use Stokes' Theorem to find the circulation of 
\( \vec{F} = $a y \vec{i} + $b z \vec{j} + $c x \vec{k} \) 
around a circle \( C \) of radius \( $r \) 
centered at \( ($d,$e,$f) \) in the plane \( z = $f \), 
oriented counterclockwise when viewed from above.
$BR
$BR
Circulation = \( \displaystyle \int_C \vec{F} \cdot d\vec{r} \) = 
\{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;


###############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


;
