DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraders.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

# Create and use pop up lists 
$tf = new_select_list();
$tf->rf_print_q(~~&pop_up_list_print_q);

# Specify choices presented to students
$tf->ra_pop_up_list( 
[ 
No_answer => "?", 
"Positive"=>"Positive", 
"Negative"=>"Negative",
"Zero"=>"Zero"
] );

# Questions and answers
$tf -> qa ( 
"\( \displaystyle \iint\limits_D x e^x \, dA \)$BR","Positive",
"\( \displaystyle \iint\limits_T x e^x \, dA \)$BR","Positive",
"\( \displaystyle \iint\limits_B x e^x \, dA \)$BR","Positive",
"\( \displaystyle \iint\limits_R x e^x \, dA \)$BR","Positive",
"\( \displaystyle \iint\limits_L x e^x \, dA \)$BR","Negative",
);

# How many questions to use
$tf->choose(5);


##############################################
#  Main text

BEGIN_TEXT
Decide, without calculation, if each of the integrals
below are positive, negative, or zero.  Let D be the 
region inside the unit circle centered at the origin.
Let T, B, R, and L denote the regions enclosed by the 
top half, the bottom half, the right half, and the 
left half of unit circle, respectively.
$BR
\{ $tf->print_q() \}
END_TEXT

install_problem_grader(~~&custom_problem_grader_fluid);
$ENV{'grader_numright'} = [3,5];
$ENV{'grader_scores'} = [0.6,1];
$ENV{'grader_message'} = "You can earn " .
"60% partial credit for 3 - 4 correct answers.";

$showPartialCorrectAnswers = 0;

ANS(str_cmp($tf->ra_correct_ans));

ENDDOCUMENT();
