DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "imageChoice.pl",
  "PGgraphmacros.pl",
  "VectorField2D.pl",
  "PGgraders.pl",
  "PGcourse.pl"
);

$refreshCachedImages=1;


############################################
#  Setup

$size = [225,225];   # the size of the images
$tsize = 310;        # tex size of the images

Context("Numeric")->variables->are(x=>"Real",y=>"Real");

foreach my $i (0..5) {
  $gr[$i] = init_graph(-5,-5,5,5,grid=>[10,10],axes=>[0,0],pixels=>[400,400]);
  $gr[$i]->lb('reset');
  foreach my $j (1..4) {
    $gr[$i]->lb( new Label(-4.7,  $j, $j,'black','center','middle'));
    $gr[$i]->lb( new Label(-4.7, -$j,-$j,'black','center','middle'));
    $gr[$i]->lb( new Label(  $j,-4.7, $j,'black','center','middle'));
    $gr[$i]->lb( new Label( -$j,-4.7,-$j,'black','center','middle'));
  }
  $gr[$i]->lb( new Label(4.7,0.2,'x','black','center','middle'));
  $gr[$i]->lb( new Label(0.2,4.7,'y','black','center','middle'));
  $gr[$i]->new_color("lightblue", 214,230,244); # RGB
  $gr[$i]->new_color("darkblue",  100,100,255);
  $gr[$i]->new_color("lightgreen",156,215,151); 
  $gr[$i]->new_color("darkgreen",   0, 86, 34);
  $gr[$i]->new_color("lightred",245,234,229); # light red-purple
  $gr[$i]->new_color("darkred", 159, 64, 16); # red-brown
  $gr[$i]->new_color("nicegreen",0,110,0);
}


$vfield[0] = "\( \vec{F}(x,y) = - y \vec{i} \)";
VectorField2D(
graphobject => $gr[0],
Fx => Formula("-y"),
Fy => Formula("0"),
xvar => "x",
yvar => "y",
xmin => -5,
xmax =>  5,
ymin => -5,
ymax =>  5,
xsamples => 10,
ysamples => 10,
vectorcolor => "blue",
vectorscale => 0.2,
vectorthickness => 2,
);


$vfield[1] = "\( \vec{F}(x,y) = - \vec{i} \)";
VectorField2D(
graphobject => $gr[1],
Fx => Formula("-1"),
Fy => Formula("0"),
xvar => "x",
yvar => "y",
xmin => -5,
xmax =>  5,
ymin => -5,
ymax =>  5,
xsamples => 10,
ysamples => 10,
vectorcolor => "blue",
vectorscale => 0.95,
vectorthickness => 2,
);


$vfield[2] = "\( \vec{F}(x,y) = - x \vec{j} \)";
VectorField2D(
graphobject => $gr[2],
Fx => Formula("0"),
Fy => Formula("-x"),
xvar => "x",
yvar => "y",
xmin => -5,
xmax =>  5,
ymin => -5,
ymax =>  5,
xsamples => 10,
ysamples => 10,
vectorcolor => "blue",
vectorscale => 0.2,
vectorthickness => 2,
);


$vfield[3] = "\( \vec{F}(x,y) = - \vec{j} \)";
VectorField2D(
graphobject => $gr[3],
Fx => Formula("0"),
Fy => Formula("-1"),
xvar => "x",
yvar => "y",
xmin => -5,
xmax =>  5,
ymin => -5,
ymax =>  5,
xsamples => 10,
ysamples => 10,
vectorcolor => "blue",
vectorscale => 0.95,
vectorthickness => 2,
);


$vfield[4] = "\( \vec{F}(x,y) = x \vec{i} \)";
VectorField2D(
graphobject => $gr[4],
Fx => Formula("x"),
Fy => Formula("0"),
xvar => "x",
yvar => "y",
xmin => -5,
xmax =>  5,
ymin => -5,
ymax =>  5,
xsamples => 10,
ysamples => 10,
vectorcolor => "blue",
vectorscale => 0.2,
vectorthickness => 2,
);


$vfield[5] = "\( \vec{F}(x,y) = y \vec{j} \)";
VectorField2D(
graphobject => $gr[5],
Fx => Formula("0"),
Fy => Formula("y"),
xvar => "x",
yvar => "y",
xmin => -5,
xmax =>  5,
ymin => -5,
ymax =>  5,
xsamples => 10,
ysamples => 10,
vectorcolor => "blue",
vectorscale => 0.2,
vectorthickness => 2,
);


#
#  Array of functions and their associated GIFs or PNGs
#
@QA = ();
foreach my $i (0..5) { push( @QA, $vfield[$i], $gr[$i] ); }

$ml = new_image_match_list(
  link => 1,                #  do not link to separate image
  size => $size,            #  image size in pixels
  tex_size => $tsize,       #  tex size in precent times 10
  columns => 3,             #  number of columns
);
$ml->{separation} = 3;      # separation for questions in the list

$ml->rf_print_q(~~&pop_up_list_print_q); # use pop-up-lists
$ml -> ra_pop_up_list([ No_answer=>"?", A=>"A", B=>"B", C=>"C", D=>"D", E=>"E", F=>"F" ] );

$ml->qa(@QA);               #  set the questions and answers
$ml->choose(6);             #  select 5 of them
#$ml->choose_extra(2);       #  and show the other 1

###############################################
#  Main text

TEXT(beginproblem());

BEGIN_TEXT
\{
ColumnTable(
"Match each vector field with its graph.".
$BR.
$BR.
$ml->print_q,
$BCENTER.
$ml->print_a.
$BR.
"(Click on a graph to enlarge it.)".
$ECENTER,
indent=>"0", separation=>"10", valign=>"TOP"
);
\}
END_TEXT

###############################################
# Answer evaluation

install_problem_grader(~~&custom_problem_grader_fluid);
$ENV{'grader_numright'} = [3,6];
$ENV{'grader_scores'} = [0.5,1];
$ENV{'grader_message'} = "You can earn " .
"50% partial credit for 3 - 5 correct answers.";

$showPartialCorrectAnswers = 0;

ANS(str_cmp($ml->ra_correct_ans));


;
ENDDOCUMENT();
