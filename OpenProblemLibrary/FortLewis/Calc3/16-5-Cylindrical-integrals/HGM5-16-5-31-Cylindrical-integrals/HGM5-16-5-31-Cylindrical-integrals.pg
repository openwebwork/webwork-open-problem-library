## DESCRIPTION
## Seting up an integral in cylindrical coordinates
## ENDDESCRIPTION


## DBsubject(Calculus - multivariable)
## DBchapter(Integration of multivariable functions)
## DBsection(Triple integrals in cylindrical and spherical)
## Date(10/31/09)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## Level(3)
## MO(1)
## TitleText1('Calculus')
## AuthorText1('Hughes-Hallett')
## EditionText1('4')
## Section1('16.5')
## Problem1('31')
## TitleText2('Calculus')
## AuthorText2('Hughes-Hallett')
## EditionText2('5')
## Section2('16.5')
## Problem2('31')
## KEYWORDS('Triple Integral','Cylindrical Coordinates')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "LiveGraphicsParametricSurface3D.pl",
  "unionTables.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

Context()->variables->are(x=>"Real",y=>"Real",z=>"Real",u=>"Real",v=>"Real",r=>"Real",theta=>"Real");

# since there are several questions like this, randomize them by problem 
# set version number so each individual student's random numbers will be the same
SRAND($psvn);

$r = random(3,8,1);
$rr = $r * $r;
$r2 = $r / (2**0.5);

$plot1 = ParametricSurface3D(
Fx => Formula("$r*cos(u)*sin(v)"),
Fy => Formula("$r*sin(u)*sin(v)"),
Fz => Formula("$r*cos(v)"),
uvar => 'u', # theta
vvar => 'v', # phi
umin => 0,
umax =>  2*pi,
vmin =>  0,
vmax =>  pi/4,
usamples => 15,
vsamples => 15,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
outputtype => 1,
);


$plot5 = ParametricSurface3D(
Fx => Formula("u * cos(v)"),
Fy => Formula("u * sin(v)"),
Fz => Formula("u"),
uvar => 'u',
vvar => 'v',
umin =>  0,
umax =>  $r2,
vmin =>  0,
vmax =>  2*pi,
usamples => 10,
vsamples => 15,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
outputtype => 1,
);


$plot = 
$beginplot . 
"{" .
"RGBColor[0,0,1]," .
$plot1 .
"," .
$plot5 .
"}" . 
",Axes->True,AxesLabel->{X,Y,Z}," .
"ViewPoint->{-2.299560248721872, 2.1997998840378945, 1.1501752617253937},
ViewVertical->{0.1890439007979272, -0.5850056675307971, 1.8747847831794622}" .
$endplot;



##########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{ 
ColumnTable(
"Suppose the solid \(W\) in the figure is a cone centered 
about the positive z-axis with its vertex at the origin, 
a \( 90^{\circ} \) angle at its vertex, and topped by a 
sphere radius \($r\). 
Find the limits of integration for an iterated integral 
of the form ".
$PAR.
$BCENTER.
"\( \displaystyle
\iiint\limits_W \, dV
=
\int_A^B \!\! \int_C^D \!\! \int_E^F \! dz \, r dr \, d\theta.
\)".
$ECENTER.
$BR.
$BR.
"A = ".ans_rule(20).$BR.
"B = ".ans_rule(20).$BR.
"C = ".ans_rule(20).$BR.
"D = ".ans_rule(20).$BR.
"E = ".ans_rule(20).$BR.
"F = ".ans_rule(20).$BR.
$BR.
"If necessary, enter \(\theta\) as ${BITALIC}theta.${EITALIC}",  
$BCENTER.
Live3Ddata(
$plot,
image => alias("HGM5-16-5-31.png"), 
size => [400,400],
tex_size => 600,
tex_center => 1,
scale => 1.2,
).
$BR.
"(Drag to rotate)".
$ECENTER,
indent=>0, separation=>30, valign=>"TOP"
)
\}
END_TEXT
Context()->normalStrings;


##################################################
#  Answers

$showPartialCorrectAnswers = 1;

#  theta
ANS(Compute("0")->cmp() );
ANS(Compute("2*pi")->cmp() );

#  r
ANS(Compute("0")->cmp() );
ANS(Compute("$r/sqrt(2)")->cmp() );

#  z
ANS(Compute("r")->cmp() );
ANS(Compute("sqrt($rr - r^2)")->cmp() );

COMMENT("Uses interactive graphics generated on-the-fly");


;
ENDDOCUMENT();
