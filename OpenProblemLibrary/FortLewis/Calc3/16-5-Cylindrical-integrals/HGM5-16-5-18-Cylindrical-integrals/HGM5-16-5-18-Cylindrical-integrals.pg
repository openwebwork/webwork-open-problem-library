## DESCRIPTION
## Seting up an integral in cylindrical coordinates
## ENDDESCRIPTION


## DBsubject(Calculus - multivariable)
## DBchapter(Integration of multivariable functions)
## DBsection(Triple integrals in cylindrical and spherical)
## Date(10/31/09)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## Level(3)
## MO(1)
## TitleText1('Calculus')
## AuthorText1('Hughes-Hallett')
## EditionText1('4')
## Section1('16.5')
## Problem1('18')
## TitleText2('Calculus')
## AuthorText2('Hughes-Hallett')
## EditionText2('5')
## Section2('16.5')
## Problem2('18')
## KEYWORDS('Triple Integral','Cylindrical Coordinates')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "LiveGraphicsParametricSurface3D.pl",
  "unionTables.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

Context()->variables->are(x=>"Real",y=>"Real",z=>"Real",u=>"Real",v=>"Real",r=>"Real",theta=>"Real");

$r = random(4,8,2);
$r2 = 2*$r;

$plot1 = ParametricSurface3D(
Fx => Formula("$r * cos(u)"),
Fy => Formula("$r * sin(u)"),
Fz => Formula("v"),
uvar => 'u',
vvar => 'v',
umin =>  pi,
umax =>  2*pi,
vmin =>  0,
vmax =>  $r,
usamples => 10,
vsamples => 1,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
outputtype => 1,
);


$plot4 = ParametricSurface3D(
Fx => Formula("u * cos(v)"),
Fy => Formula("u * sin(v)"),
Fz => Formula("0"),
uvar => 'u',
vvar => 'v',
umin =>  0,
umax =>  $r,
vmin =>  pi,
vmax =>  2*pi,
usamples => 5,
vsamples => 10,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
outputtype => 1,
);

$plot5 = ParametricSurface3D(
Fx => Formula("u * cos(v)"),
Fy => Formula("u * sin(v)"),
Fz => Formula("u"),
uvar => 'u',
vvar => 'v',
umin =>  0,
umax =>  $r,
vmin =>  pi,
vmax =>  2*pi,
usamples => 5,
vsamples => 10,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
outputtype => 1,
);



$plot = 
$beginplot . 
"{" .
"RGBColor[0,0,1]," .
$plot1 .
"," .
"{Polygon[{{0,0,0},{$r,0,0},{$r,0,$r}}]}" .
"," .
"{Polygon[{{0,0,0},{-$r,0,0},{-$r,0,$r}}]}" .
"," .
$plot4 .
"," .
$plot5 .
"}" . 
",Axes->True,AxesLabel->{X,Y,Z}," .
"ViewPoint->{-2.299560248721872, 2.1997998840378945, 1.1501752617253937},
ViewVertical->{0.1890439007979272, -0.5850056675307971, 1.8747847831794622}" .
$endplot;



##########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{ 
ColumnTable(
"Suppose the solid \(W\) in the figure is part of a 
circular cylinder of diameter \($r2\) and height \($r\) 
centered about the z-axis, its base on the xy-plane, 
with \( y \leq 0 \) and a conical portion cut out. 
Find the limits of integration for an iterated integral 
of the form ".
$PAR.
$BCENTER.
"\( \displaystyle
\iiint\limits_W f \, dV
=
\int_A^B \!\! \int_C^D \!\! \int_E^F \! f(r,\theta,z) \, dz \, r dr\, d\theta.
\)".
$ECENTER.
$BR.
$BR.
"A = ".ans_rule(20).$BR.
"B = ".ans_rule(20).$BR.
"C = ".ans_rule(20).$BR.
"D = ".ans_rule(20).$BR.
"E = ".ans_rule(20).$BR.
"F = ".ans_rule(20).$BR.
$BR.
"If necessary, enter \(\theta\) as ${BITALIC}theta.${EITALIC}",  
$BCENTER.
Live3Ddata(
$plot,
image => alias("HGM5-16-5-18.png"), 
size => [400,400],
tex_size => 600,
tex_center => 1,
scale => 1.2,
).
"(Drag to rotate)".
$ECENTER,
indent=>0, separation=>30, valign=>"TOP"
)
\}
END_TEXT
Context()->normalStrings;


##################################################
#  Answers

$showPartialCorrectAnswers = 1;

#  theta
ANS(Formula("pi")->cmp() );
ANS(Formula("2*pi")->cmp() );

#  radius r
ANS(Formula("0")->cmp() );
ANS(Formula("$r")->cmp() );

#  height z
ANS(Formula("0")->cmp() );
ANS(Formula("r")->cmp() );

COMMENT("Uses interactive graphics generated on-the-fly");


;
ENDDOCUMENT();
