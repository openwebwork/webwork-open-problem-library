DOCUMENT();        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserImplicitPlane.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

Context("ImplicitPlane");

#
#  Vectors in the plane
#
$c = random(2,5,1);
$b = random(2,5,1);

$select = random(0,1,1);

@plane = ("yz","xz");
@axis = ("x","y");

if ($select == 0) {

$m = Real("- $c / $b");
$n = Real("0");
$AB = Vector(0,1,0);
$AC = Vector($b,0,-($c));

} else {

$m = Real("0");
$n = Real("- $c / $b");
$AB = Vector(1,0,0);
$AC = Vector(0,$b,-($c));

}

#$AB = Vector(0,$r[0],$r[1]);
#$AC = Vector($r[2],0,$r[3]);

#
#  The normal vector
#
$N = cross $AB $AC;

#
#  The points A, B and C
#
#$A = non_zero_point3D();
$A = Point(0,0,$c);
#$B = Point($A + $AB);
#$C = Point($A + $AC);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Find the equation of the plane in the form \( z = c + m x + n y \)
containing the line in the xy-plane where \($axis[$select] = $b\), 
and the line in the \($plane[$select]\)-plane where \(z = $c\). 
$BR
\{ans_rule(40)\}

END_TEXT
Context()->normalStrings;

##################################################

ANS(ImplicitPlane($A,$N)->cmp);
$showPartialCorrectAnswers = 1;


;
ENDDOCUMENT();
