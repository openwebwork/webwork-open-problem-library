DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

TEXT( beginproblem() );

Context("Vector");
Context()->variables->add(t=>"Real");
Context()->variables->set(t=>{limits=>[-5,5]});

$a = random(2,5,1);
$b = random(-5,-2,1);
while (abs($a) == abs($b)) { $a = random(2,5,1); }
$c = random(6,9,1);
$x = Formula("$a * cos(t)");
$y = Formula("$b * sin(t)");
$z = Formula("$c");

$answer = Vector("<$x,$y,$z>");


Context()->texStrings;
BEGIN_TEXT
Find a vector parametrization for the quarter-ellipse 
from \( ($a,0,$c) \) to \( (0,$b,$c) \) centered
at \( (0,0,$c) \) in the plane \( z = $c \).  Use 
the interval \( 0 \leq t \leq \pi/2 \).
$BR
$BR
\( \vec{r}(t) = \) \{ ans_rule(40) \}
END_TEXT
Context()->normalStrings;


$showPartialCorrectAnswers = 1;

sub mycheck {
  my ($correct, $student, $ansHash) = @_;
  $xstu = $student . i;
  $ystu = $student . j;
  $zstu = $student . k;
      if ( 
           ( (($xstu/$a)**2+($ystu/$b)**2) == 1 ) && 
           ( ($xstu->eval(t=>"0")) == $a ) &&
           ( ($xstu->eval(t=>"pi/2")) == 0 ) &&
           ( ($ystu->eval(t=>"0")) == 0 ) &&
           ( ($ystu->eval(t=>"pi/2")) == $b ) &&
           ( $zstu == $c ) 
         ) {
            return 1;
      } else {
            return 0;
      }
}

ANS($answer->cmp( checker=>~~&mycheck) );



;
ENDDOCUMENT();
