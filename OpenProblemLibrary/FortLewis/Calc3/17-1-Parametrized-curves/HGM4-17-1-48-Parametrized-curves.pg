DOCUMENT();  

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserParametricLine.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

Context("ParametricLine");
Context()->variables->add(x=>"Real",y=>"Real");

#
#  The points A and B
#
$a = non_zero_random(-5,5,1);
$b = non_zero_random(-5,5,1);
$f = Formula("x**2 + y**2") -> reduce;
$c = $f->eval(x=>"$a",y=>"$b");


$P = Point($a,$b,$c);
$V = Vector(2 * $a, 2 * $b, -1);

$L = ParametricLine($P,$V);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Consider the line perpendicular to the surface \( z = $f \)
at the point where \( x = $a\) and \( y = $b. \)  
Find a vector parametric equation for this line in terms of
the parameter \( t. \)
$BBLOCKQUOTE
\(L(t)\) = \{ans_rule(40)\}.
$EBLOCKQUOTE

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

$showPartialCorrectAnswers = 1;

ANS($L->cmp);


;
ENDDOCUMENT();
