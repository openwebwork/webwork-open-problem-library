## DESCRIPTION
## Seting up an integral in spherical coordinates
## ENDDESCRIPTION


## DBsubject(Calculus - multivariable)
## DBchapter(Integration of multivariable functions)
## DBsection(Triple integrals in cylindrical and spherical)
## Date(10/31/09)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## Level(3)
## MO(1)
## TitleText1('Calculus')
## AuthorText1('Hughes-Hallett')
## EditionText1('4')
## Section1('16.5')
## Problem1('15')
## TitleText2('Calculus')
## AuthorText2('Hughes-Hallett')
## EditionText2('5')
## Section2('16.5')
## Problem2('15')
## KEYWORDS('Triple Integral','Spherical Coordinates')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "LiveGraphicsParametricSurface3D.pl",
  "unionTables.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

Context()->variables->are(x=>"Real",y=>"Real",z=>"Real",u=>"Real",v=>"Real",rho=>"Real",phi=>"Real",theta=>"Real");

$r = random(2,4,2);
$R = random(6,10,2);

$plot1 = ParametricSurface3D(
Fx => Formula("$r*cos(u)*sin(v)"),
Fy => Formula("$r*sin(u)*sin(v)"),
Fz => Formula("$r*cos(v)"),
uvar => 'u', # theta
vvar => 'v', # phi
umin => 0,
umax =>  2*pi,
vmin =>  pi/2,
vmax =>  pi,
usamples => 15,
vsamples => 15,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
outputtype => 1,
);


$plot2 = ParametricSurface3D(
Fx => Formula("$R*cos(u)*sin(v)"),
Fy => Formula("$R*sin(u)*sin(v)"),
Fz => Formula("$R*cos(v)"),
uvar => 'u', # theta
vvar => 'v', # phi
umin => 0,
umax =>  2*pi,
vmin =>  pi/2,
vmax =>  pi,
usamples => 15,
vsamples => 15,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
outputtype => 1,
);



$plot3 = ParametricSurface3D(
Fx => Formula("u * cos(v)"),
Fy => Formula("u * sin(v)"),
Fz => Formula("0"),
uvar => 'u',
vvar => 'v',
umin =>  $r,
umax =>  $R,
vmin =>  0,
vmax =>  2*pi,
usamples => 10,
vsamples => 15,
axesframed => 1,
xaxislabel => "X",
yaxislabel => "Y",
zaxislabel => "Z",
outputtype => 1,
);


$plot = 
$beginplot . 
"{" .
"RGBColor[0,0,1]," .
$plot1 .
"," .
$plot2 .
"," .
$plot3 .
"}" . 
",Axes->True,AxesLabel->{X,Y,Z},ViewPoint->{1.0950130536032479, -2.9048622051599846, 1.3463736411084264},
ViewVertical->{-0.18329322466188652, 0.3560727892433195, 1.8229277123306231}" . 
$endplot;



##########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{ 
ColumnTable(
"Suppose the solid \(W\) in the figure consists of the
points below the xy-plane that are between concentric 
spheres centered at the origin of radii \($r\) and \($R\). 
Find the limits of integration for an iterated integral 
of the form ".
$PAR.
$BCENTER.
"\( \displaystyle
\iiint\limits_W f \, dV
=
\int_A^B \!\! \int_C^D \!\! \int_E^F \! f(\rho,\phi,\theta) \, \rho^2 \sin(\phi) \, d\rho \, d\phi \, d\theta.
\)".
$ECENTER.
$BR.$BR.
"A = ".ans_rule(20).$BR.
"B = ".ans_rule(20).$BR.
"C = ".ans_rule(20).$BR.
"D = ".ans_rule(20).$BR.
"E = ".ans_rule(20).$BR.
"F = ".ans_rule(20).$BR.
$BR.
"If necessary, enter \( \rho \) as ${BITALIC}rho,${EITALIC} 
\( \phi \) as ${BITALIC}phi,${EITALIC} and
\( \theta \) as ${BITALIC}theta.${EITALIC}",  
$BCENTER.
Live3Ddata(
$plot,
image => alias("HGM5-16-5-15.png"), 
size => [400,400],
tex_size => 600,
tex_center => 1,
scale => 1.2,
).
$BR.
"(Drag to rotate)".
$ECENTER,
indent=>0, separation=>30, valign=>"TOP"
)
\}
END_TEXT
Context()->normalStrings;


##################################################
#  Answers

$showPartialCorrectAnswers = 1;

#  theta
ANS(Real("0")->cmp() );
ANS(Real("2*pi")->cmp() );

#  phi
ANS(Real("pi/2")->cmp() );
ANS(Real("pi")->cmp() );

#  rho
ANS(Real("$r")->cmp() );
ANS(Real("$R")->cmp() );

COMMENT("Uses interactive graphics generated on-the-fly");

BEGIN_SOLUTION
$PAR SOLUTION $BR $BR
\( \displaystyle
\iiint\limits_W f \, dV
=
\int_0^{2 \pi}\int_{\pi/2}^\pi \int_{$r}^{$R}f(\rho,\phi,\theta) \, \rho^2 \sin(\phi) \, d\rho \, d\phi \, d\theta.
\).
END_SOLUTION



ENDDOCUMENT();
