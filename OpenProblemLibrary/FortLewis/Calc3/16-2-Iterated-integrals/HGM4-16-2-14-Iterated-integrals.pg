## DESCRIPTION
## Double integrals
## ENDDESCRIPTION


## DBsubject(Calculus - multivariable)
## DBchapter(Integration of multivariable functions)
## DBsection(Iterated integrals and Fubini's theorem)
## Date(10/31/09)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## Level(2)
## MO(1)
## TitleText1('Calculus')
## AuthorText1('Hughes-Hallett')
## EditionText1('4')
## Section1('16.2')
## Problem1('21')
## TitleText2('Calculus')
## AuthorText2('Hughes-Hallett')
## EditionText2('5')
## Section2('16.2')
## Problem2('21')
## KEYWORDS('Double Integral')

DOCUMENT();        

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"weightedGrader.pl",
"parserPopUp.pl",
"unionTables.pl",
"PGgraphmacros.pl",
"PGchoicemacros.pl",
);


TEXT(beginproblem());

$refreshCachedImages=1;

##############################################
#  Setup

Context("Numeric")->variables->are(x=>"Real",y=>"Real");

$a = random(2,3,1);
$b = random(2,3,1);
$c = random(100,200,10);

$f = Formula("$c * x**($a) * y**($b)")->reduce;

$answer = Real("$c * ((1 / ($a + 1)) * ( (1)/($a+$b+2) - (1)/( ($a+1)/2 + $b+1) ) )") -> reduce;



#
#  Create graph canvases
#
foreach my $j (0..1) {

$gr[$j] = init_graph(-0.25,-0.25,1.25,1.25,axes=>[0,0],size=>[300,300]);
$gr[$j]->lb('reset');
$gr[$j]->lb( new Label(1.2,0.05,'x','black','center','middle'));
$gr[$j]->lb( new Label(0.05,1.2,'y','black','center','middle'));
$gr[$j]->new_color("lightblue",214,230,244);
$gr[$j]->new_color("darkblue", 100,100,255);
$gr[$j]->h_grid("gray",1);
$gr[$j]->v_grid("gray",1);
$gr[$j]->lb( new Label(1,-0.05,'1','black','center','middle'));
$gr[$j]->lb( new Label(-0.05,1,'1','black','center','middle'));
} # end create graph canvases

#
#  Manually add graphs to canvases
#
#  Correct graph is $gr[0]
add_functions($gr[0],
"x   for x in <0,1> using color:darkblue and weight:2",
"x^2 for x in <0,1> using color:darkblue and weight:2",
);
$gr[0]->fillRegion([0.5,0.45,"lightblue"]);

add_functions($gr[1],
"x   for x in <0,1> using color:darkblue and weight:2",
"sqrt(x) for x in <0,1> using color:darkblue and weight:2",
);
$gr[1]->fillRegion([0.5,0.55,"lightblue"]);




##################
#  Graph matching

foreach my $j (0..1) {
  $fig[$j] = image(insertGraph($gr[$j]),width=>200,height=>200,tex_size=>450);
}

@perm = shuffle(2);
@inv = invert(@perm);

$popup = PopUp(["?","A","B"],$ALPHABET[$inv[0]]);


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{
ColumnTable(
"Consider the following integral.  Sketch its region of integration in the 
\(xy\)-plane.".
$PAR.
$BCENTER.
"\( \displaystyle
\int_{0}^{1} \!\! \int_{\sqrt{y}}^{y} $f \, dx \, dy  
\)".
$ECENTER. 
$PAR.
"(a) Which graph shows the region of integration in the \(xy\)-plane? ".
$popup->menu().
$BR.
$BR.
"(b) Evaluate the integral. ".
ans_rule(40),
$BCENTER.
BeginTable().
  AlignedRow([$fig[$perm[0]],$fig[$perm[1]]]).
  TableSpace(5,0).
  AlignedRow(["A","B"]).
EndTable().
$BR.
"(Click on a graph to enlarge it)".
$ECENTER,
indent => 0, separation => 30, valign => "TOP"
)
\}
END_TEXT
Context()->normalStrings;


##################################################
#  Answers

install_weighted_grader();
$showPartialCorrectAnswers = 1;

WEIGHTED_ANS($popup->cmp(), 5);
WEIGHTED_ANS($answer->cmp(), 95);


COMMENT('MathObject version');
ENDDOCUMENT();
