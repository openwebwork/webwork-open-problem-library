DOCUMENT();  
loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"MathObjects.pl",
"PGunion.pl",
"parserVectorUtils.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

####################################
# Setup

Context("Vector");

$U1 = random(2,5,1)*non_zero_vector3D();
$V1 = random(-5,-2,1)*$U1; # parallel to U1
$W1 = random(2,5,1)*non_zero_vector3D();  
$X1 = random(2,5,1)*non_zero_vector3D();  
$Y1 = random(-5,-2,1)*non_zero_vector3D(); 
$Z1 = random(-5,-2,1)*non_zero_vector3D();
while ($W1->isParallel($U1) == 1) { 
   $W1 = random(2,5,1)*non_zero_vector3D(); 
};
while (
  ($X1->isParallel($U1) == 1) || 
  ($X1->isParallel($W1) == 1)   
  ) { 
     $X1 = random(2,5,1)*non_zero_vector3D(); 
};
while (
  ($Y1->isParallel($U1) == 1) || 
  ($Y1->isParallel($W1) == 1) || 
  ($Y1->isParallel($X1) == 1)
  ) { 
     $Y1 = random(-5,-2,1)*non_zero_vector3D(); 
};
while (
  ($Z1->isParallel($U1) == 1) || 
  ($Z1->isParallel($W1) == 1) || 
  ($Z1->isParallel($X1) == 1) || 
  ($Z1->isParallel($Y1) == 1)
  ) { 
     $Z1 = random(-5,-2,1)*non_zero_vector3D(); 
};

$cmc1 = new_checkbox_multiple_choice();
$cmc1 -> qa (
"Please select the two vectors that are parallel.",  # question
"\( $U1 \)", # a correct answer
"\( $V1 \)", # another correct answer                
);
$cmc1 -> extra(
"\( $W1 \)",
"\( $X1 \)",
"\( $Y1 \)",
"\( $Z1 \)"
);


$U2 = random(2,5,1)*non_zero_vector3D();
$V2 = random(2,5,1)*$U2; # parallel to U2
$W2 = random(2,5,1)*non_zero_vector3D();  
$X2 = random(2,5,1)*non_zero_vector3D();  
$Y2 = random(-5,-2,1)*non_zero_vector3D(); 
$Z2 = random(-5,-2,1)*non_zero_vector3D();
while ($W2->isParallel($U2) == 1) { 
   $W2 = random(2,5,1)*non_zero_vector3D(); 
};
while (
  ($X2->isParallel($U2) == 1) || 
  ($X2->isParallel($W2) == 1)   
  ) { 
     $X2 = random(2,5,1)*non_zero_vector3D(); 
};
while (
  ($Y2->isParallel($U2) == 1) || 
  ($Y2->isParallel($W2) == 1) || 
  ($Y2->isParallel($X2) == 1)
  ) { 
     $Y2 = random(-5,-2,1)*non_zero_vector3D(); 
};
while (
  ($Z2->isParallel($U2) == 1) || 
  ($Z2->isParallel($W2) == 1) || 
  ($Z2->isParallel($X2) == 1) || 
  ($Z2->isParallel($Y2) == 1)
  ) { 
     $Z2 = random(-5,-2,1)*non_zero_vector3D(); 
};

$cmc2 = new_checkbox_multiple_choice();
$cmc2 -> qa (
"Please select the two vectors that are parallel.",  # question
"\( $U2 \)", # a correct answer
"\( $V2 \)", # another correct answer                
);
$cmc2 -> extra(
"\( $W2 \)",
"\( $X2 \)",
"\( $Y2 \)",
"\( $Z2 \)"
);

################################################
# Present the question

Context()->texStrings;
BEGIN_TEXT

Which of the following vectors are parallel?

\{BeginList()\}

$ITEM
\{ $cmc1 -> print_q() \}
$BR
\{ $cmc1 -> print_a() \}
$ITEMSEP

$ITEM
\{ $cmc2 -> print_q() \}
$BR
\{ $cmc2 -> print_a() \}

\{EndList()\}
END_TEXT
Context()->normalStrings;

################################################
# Answers

$showPartialCorrectAnswers = 1;

ANS(checkbox_cmp($cmc1->correct_ans));
ANS(checkbox_cmp($cmc2->correct_ans));


COMMENT('MathObject version');
ENDDOCUMENT();
