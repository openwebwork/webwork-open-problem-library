DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"PGcourse.pl",
"PGgraders.pl",
);

TEXT(beginproblem());


########################################## 
#  Setup: Begin stuff to be edited

$a = random(2,5,1);
$b = random(2,5,1);
$c = random(2,5,1);
$d = random(2,5,1);


# Create and use pop up lists 
$tf = new_select_list();
$tf->rf_print_q(~~&pop_up_list_print_q);

# Specify choices presented to students
$tf->ra_pop_up_list( 
[ No_answer => "?", 
"Lines"=>"Lines", 
"Parabolas"=>"Parabolas",
"Ellipses"=>"Ellipses",
"Hyperbolas"=>"Hyperbolas"
] );

# Questions and answers
$tf -> qa ( 
"\( z = - $a x^2 \)","Lines",
"\( z = y - $b x^2 \)","Parabolas",
"\( z = x^2 + $c y^2 \)","Ellipses",  
"\( z = x^2 - $d y^2 \)","Hyperbolas",
);

# How many questions to use
$tf->choose(4);


###########################################
#  Main Text

BEGIN_TEXT
Sketch a contour diagram of each function.  Then, decide whether
its contours are predominantly lines, parabolas, ellipses, or hyperbolas. 
$BR
\{ $tf->print_q() \}
END_TEXT


############################################
#  Answer evaluation

install_problem_grader(~~&custom_problem_grader_fluid);
$ENV{'grader_numright'} = [2,4];
$ENV{'grader_scores'} = [0.5,1];
$ENV{'grader_message'} = "You can earn " .
"50% partial credit for 2 - 3 correct answers.";

$showPartialCorrectAnswers = 0;

ANS(str_cmp($tf->ra_correct_ans));

ENDDOCUMENT(); 
