loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"unionTables.pl",
"PGgraders.pl",
);


TEXT(beginproblem());

$refreshCachedImages=1;

##############################################
#  Setup

# Create and use pop up lists 
$tf = new_select_list();
$tf->rf_print_q(~~&pop_up_list_print_q);

# Specify choices presented to students
$tf->ra_pop_up_list( 
[ No_answer => "?", "Positive"=>"Positive", "Negative"=>"Negative", "Zero"=>"Zero"] );

# Questions and answers
$tf -> qa ( 
"\( f_{x} \, (P) \)", "Positive",    
"\( f_{y} \, (P) \)", "Negative",
"\( f_{xx} \, (P) \)","Negative",    
"\( f_{yy} \, (P) \)","Negative",
);

# How many questions to use
$tf->choose(4);


##############################################
#  Main text

BEGIN_TEXT
\{
ColumnTable(
"Use the level curves of the function \( z = f(x,y) \) to determine 
if each partial derivative at the point \(P\) is positive, 
negative, or zero.".
$BR.
$BR.
$tf->print_q(), # comma!
$BCENTER.
image("HGM4-14-7-27.png", width=>400, height=>400, tex_size=>500).
