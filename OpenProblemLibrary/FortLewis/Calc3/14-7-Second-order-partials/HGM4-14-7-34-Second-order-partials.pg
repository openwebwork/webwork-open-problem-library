#  Part A

$mca = new_multiple_choice();

$mca -> qa (
"If \( z = f(x) + y g(x) \), what can we say about \( z_{yy} \)?",
"\( z_{yy} = 0\)",
);

$mca -> extra(
"\( z_{yy} = y \)",
"\( z_{yy} = g(x) \)",
"\( z_{yy} = z_{xx} \)",
);

$mca -> makeLast( "We cannot say anything" );


