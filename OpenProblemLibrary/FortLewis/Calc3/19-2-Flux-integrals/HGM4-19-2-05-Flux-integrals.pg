\{ ans_rule(40) \}
END_TEXT
Context()->normalStrings;





##################################################
#  Answers

ANS($multipart->cmp() );
ANS(($V)->cmp());

$showPartialCorrectAnswers = 1;

COMMENT('Allows integration in either order.');


COMMENT('MathObject version');
ENDDOCUMENT();