loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#####################################
#  Setup

Context("Numeric");

$r = random(3,7,1);
$rr = $r * $r;

$z = random(1,5,1);

$answer = Real("pi sin($rr)");


########################################
#  Main text

BEGIN_TEXT
Calculate the flux of the vector field
\( \vec{F}(x,y,z) = \cos(x^2+y^2) \vec{k} \) 
through the disk \( x^2+y^2 \leq $rr \)
oriented upward in the plane \( z = $z \).
$BR
$BR
Flux = \{ ans_rule(20) \}
END_TEXT


###############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


;
