DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"MathObjects.pl",
"PGcourse.pl",
);

#####################################
#  Setup

Context("Vector");
Context()->flags->set( ijk=>1 );

$a = random(2,4,1);
$div = Formula("$a * x**2 + y**2 - z**2");

@P = ( random(-1,1,2)*random(3,5,1), random(-1,1,2)*random(3,5,1), random(-1,1,2)*random(1,2,1) );

$divP = $div->eval(x=>$P[0], y=>$P[1], z=>$P[2]);

$r = random(0.1,0.4,0.1);
$vol = "4 * pi * ($r**3) / 3";


$flux = Real("$divP * $vol");

########################################
#  Main text

TEXT(beginproblem());

Context()->texStrings;
BEGIN_TEXT

Suppose \( \mathrm{div}( \vec{F} ) = $div.\)  Estimate
the flux out of a small sphere of radius \( $r \) centered
at \( ($P[0],$P[1],$P[2]) .\)
$BR
$BR
Flux out of the small sphere \( \approx \)
\{ans_rule(20)\}

END_TEXT
Context()->normalStrings;


###############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($flux->cmp());


;
ENDDOCUMENT();