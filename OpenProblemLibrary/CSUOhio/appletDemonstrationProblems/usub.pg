#  Answers
#
## answer evaluators

NAMED_ANS( 'answerBox'=>$anslist->cmp(ordered=>1) );


COMMENT('This problem requires that Flash be enabled on your device.  Click try it to see what students will see.');

ENDDOCUMENT();       
