DOCUMENT();        # This should be the first executable line in the problem.


loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AppletObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Numeric"); 

################ Problem constants ################

Context()->flags->set(
tolerance=>0.000001,
tolType=>relative
);

Context()->variables->add(r=>"Real");

$areaFunction = Formula("2*pi*r^2 + 1200/r");
$optimalRadius = Compute("(300/pi)^(1/3)");
$optimalHeight = Compute("2*$optimalRadius");



###################################




    ###################################
    # Create  link to applet 
    ###################################
    $appletName = "CanFixedVolume_04";
    $applet =  FlashApplet(
       codebase              => findAppletCodebase("$appletName.swf"),
       appletName            => $appletName,
       appletId              => $appletName,
       #setStateAlias         => 'setXML',
       #getStateAlias         => 'getXML',
       #setConfigAlias        => 'setConfig',
       #getConfigAlias        => 'getConfig',
       #initializeActionAlias => 'setXML',
       maxInitializationAttempts => 5,   # number of attempts to initialize applet
       #submitActionAlias     =>  'getXML',
       height                => '480',
       width                 => '600',
       bgcolor               => '#FFFFFF',
       debugMode             =>  0,
       submitActionScript  =>  qq{},
     );

###################################
