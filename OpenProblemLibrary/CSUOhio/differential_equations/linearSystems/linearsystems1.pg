##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGmatrixmacros.pl",
);


TEXT(beginproblem());


#############################
#  Setup

Context("Numeric");
Context()->variables->are(t=>"Real",x=>"Real");

$a = random(2,6,1);
do { $b = random(3,6,1); } until ($b != $a);
do { $n = random(2,6,1); } until ($n != $a && $n != $b);

$f1=Formula("t^{$b}-$a t^2+t")->reduce;
$f2=Formula("e^t*sin t")->reduce;


$g1 = Formula("$b*cos x");
$g2 = Real("-$a e^{-2x}");

$Df1 = $f1->D('t');
$Df2 = $f2->D('t');
$Dg1 = $g1->D('x');
$Dg2 = $g2->D('x');


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose
$PAR
\[X(t)=\left[\begin{array}{c}
\displaystyle $f1\\
\displaystyle $f2
\end{array}\right]
\]
\[V(x)=\left[\begin{array}{c}
\displaystyle $g1\\
\displaystyle $g2
\end{array}\right]
\]
$BR
Find the derivative of the vectors \(X(t)\) and \(V(x)\).$BR

$PAR
$BCENTER
\{ 
mbox(
  "\( X^\prime(t) = \)",
  display_matrix([
  [ans_rule(15)], 
  [ans_rule(15)]
  ], align=>'c')
);
\}
$ECENTER

$PAR
$BCENTER
\{ 
mbox(
  "\( V^\prime(x) = \)",
  display_matrix([
  [ans_rule(15)], 
  [ans_rule(15)]
  ], align=>'c')
);
\}
$ECENTER

END_TEXT
Context()->normalStrings;


######################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($Df1->cmp());
ANS($Df2->cmp());
ANS($Dg1->cmp());
ANS($Dg2->cmp());

COMMENT("MathObject version.");

ENDDOCUMENT();