##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"unionLists.pl",
"parserPopUp.pl",
);

TEXT(beginproblem());


#############################
#  Setup 
Context("Numeric")->variables->are(
a=>"Real",
);
$a=random(1,3);
$expr = Compute("a^2-$a*a")->reduce();

#############################
#  Main text 

Context()->texStrings;
BEGIN_TEXT
For what value(s) of the constant \(a\) is the differential equation
\[\frac{d^2x}{dt^2}+($expr)x\frac{dx}{dt}=te^{(a-$a)x}\]
a linear equation?
$BR$BR
\{ ans_rule(10) \}

$BR
$BR

END_TEXT
Context()->normalStrings;


##############################
#  Answer evaluation 

$showPartialCorrectAnswers = 1;
ANS( num_cmp( $a ) );

COMMENT("MathObject version.");

ENDDOCUMENT();