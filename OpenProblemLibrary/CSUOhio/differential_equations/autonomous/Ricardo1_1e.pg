ANS($I2->cmp);
ANS($cup->cmp);
ANS($cdown->cmp);

ANS($lim1->cmp);
NAMED_ANS('answerBox'=>$ans->cmp());

ANS($lim2->cmp);
ANS( $popup1->cmp() );
ANS( $popup2->cmp() );
ANS( $popup3->cmp() );



