#  Answers
#
#

ANS($inc->cmp);
ANS($cup->cmp);
ANS($cdown->cmp);
ANS(auto_right("All answers are marked correct.  Your instructor will grade your work after the due date."));
ANS($lim1->cmp);
NAMED_ANS('answerBox'=>$ans->cmp());

ANS($lim2->cmp);
ANS( $popup1->cmp() );
ANS( $popup2->cmp() );
ANS( $popup3->cmp() );


