###################################
@params_array = (
[0.25,4,0.16],
[0.50,2,0.21],
[0.20,5,0.21],
[0.20,5,0.16],
[0.25,4,0.09],
[0.20,5,0.09],
[0.50,2,0.16],
[0.20,5,0.24],
[0.25,4,0.21],
[0.50,2,0.09]);

SRAND($psvn);
$choice = random(0,9,1);
$k = $params_array[$choice][0];
$N = $params_array[$choice][1];
$a = $params_array[$choice][2];
$disc = $k*$N*($k*$N-4*$a);

if ($disc>0) {
   $aux = sqrt($disc);
   $ans1 = Compute("($k*$N-$aux)/(2*$k)");
   $ans2 = Compute("($k*$N+$aux)/(2*$k)");
   $ans3 = Compute("[0,$ans1)");
} else {
   $ans1 = Compute("DNE");
   $ans2 = Compute("DNE");
   $ans3 = Compute("{}");
}

