DOCUMENT();      

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl", 
"PGgraphmacros.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 0;

## number of correct answers
$size=random(2,3,1);

## correct answers
@correct=('\(f(x)=\cos(x)+\sin(x)\)',
          '\(f(t)=2+\tan(t)\)',
          '\(f(\beta)=1+\csc(\beta)\)');
@slicecorr=NchooseK(3,$size);

## incorrect answers
@incorrect=('\(f(t)=\sec^2(t)-1\)',
            '\(f(\alpha)=1+\sec(\alpha)\)',
            '\(\displaystyle{f(x)=\frac{\sin(x)}{x}}\)',
            '\(f(x)=\cos(2x)\)',
            '\(f(x)=\csc(x^2)\)',
            '\(f(x)=\sin(2x)\)',
            '\(f(x)=x+\sin(x)\)',
            '\(f(x)=2\sin(x)\cos(x)\)',
            '\(f(x)=x\cos(x)\)',
            '\(\displaystyle{f(x)=\frac{\cos(2x)}{x}}\)');
@sliceincorr=NchooseK(10,6-$size);


$cmc = new_checkbox_multiple_choice();
$cmc -> qa ("Which of these functions are neither odd nor even? ", 
            @correct[@slicecorr]);


$cmc -> extra ( @incorrect[@sliceincorr] );

BEGIN_TEXT

\{$cmc -> print_q \}
\{$cmc -> print_a \}



END_TEXT



ANS( checkbox_cmp( $cmc->correct_ans ));

ENDDOCUMENT(); 
