DOCUMENT();      

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl", 
"PGgraphmacros.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$ml = new_match_list();
$ml->qa('\(\sin(x)\)',
        '\(\displaystyle{\frac{1}{\csc(x)}}\)',
        '\(\tan(x)\)',       
        '\(\displaystyle{\frac{\sin(x)}{\cos(x)}}\)',
        '\(\cot(x)\)',
        '\(\displaystyle{\frac{\cos(x)}{\sin(x)}}\)',
        '\(\sec(x)\)',
        '\(\displaystyle{\frac{1}{\cos(x)}}\)',
        '\(\csc(x)\)',
        '\(\displaystyle{\frac{1}{\sin(x)}}\)',
        '\(\sin^2(x)\)',
        '\(1-\cos^2(x)\)',
        '\(\cos^2(x)\)',
        '\(1-\sin^2(x)\)',
        '\(\tan^2(x)\)',
        '\(\sec^2(x)-1\)',
        '\(\sin(-x)\)',
        '\(-\sin(x)\)',
        '\(\cos(-x)\)',
        '\(\displaystyle{\frac{1}{\sec(x)}}\)',
        '\(\tan(-x)\)',
        '\(-\tan(x)\)',
        '\(\cot(-x)\)',
        '\(-\cot(x)\)',
        '\(\csc(-x)\)',
        '\(-\csc(x)\)',
        '\(\cot^2(x)\)',
        '\(\csc^2(x)-1\)',
        '\(\sec^2(x)\)',
        '\(1+\tan^2(x)\)',
        '\(\csc^2(x)\)',
        '\(1+\cot^2(x)\)'
        );
# choose 6 of these questions, ordered at random
$ml->choose(6);

# the answers not chosen become extra answers
# careful with this, all the answers need to be different

$ml->choose_extra(6);

BEGIN_TEXT

$PAR
												        
Match each given expression with one of the expressions from below (A-L):
$BR
															        
\{$ml->print_q\} 
$BR
																        
Answers:
\{$ml->print_a\}
																		    
END_TEXT

ANS( str_cmp($ml->ra_correct_ans()) );

ENDDOCUMENT(); 
