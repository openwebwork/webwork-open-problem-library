DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGasu.pl",
  "extraAnswerEvaluators.pl",
  "PGcourse.pl"
);


TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;



$pick=random(0,1,1);

do {
$a = random(1,7,1);
$b = random(2,13,1);
$divisor=gcd($a,$b);
}  until (($a<$b)&&($divisor==1));


$q = random(2,4,1);

@trigfn=('\( \sin( \alpha )\) ', '\( \cos( \alpha )\) ');

if ($pick==0){
$switch=1;
}
if ($pick==1){
$switch=0;
}


if ($pick==0){
if ($q == 2) {
$s = 1;
$theta = $PI - arcsin($a/$b);
$quad = 'II';
}
if ($q == 3) {
$s = -1;
$theta = $PI + arcsin($a/$b);
$quad = 'III';
}
if ($q == 4) {
$s = -1;
$theta = 2*$PI - arcsin($a/$b);
$quad = 'IV';
}
if ($s == 1) {$sign = ' '}
if ($s == -1) {$sign = '-'}

$ans_a = cos($theta);
}






if ($pick==1){
if ($q == 2) {
$s = -1;
$theta = arccos($a/$b);
$quad = 'II';
}
if ($q == 3) {
$s = -1;
$theta = 2*$PI-arccos($a/$b);
$quad = 'III';
}
if ($q == 4) {
$s = 1;
$theta = 2*$PI - arccos($a/$b);
$quad = 'IV';
}
if ($s == 1) {$sign = ' '}
if ($s == -1) {$sign = '-'}
$ans_a = sin($theta);
}

BEGIN_TEXT
$PAR
If $trigfn[$pick] = $sign \(\frac {$a} {$b}\), and \( \alpha \) is in quadrant $quad , then
$PAR
$trigfn[$switch] = \{ ans_rule(15) \}
$PAR
Express your answer in exact form.  Your answer may contain NO decimals.  
Type "sqrt" if you need to use a square root.

END_TEXT

&ANS(exact_no_trig($ans_a));

ENDDOCUMENT(); # This should be the last executable line in the problem.
