##DESCRIPTION
## DBsubject(Algebra)
## DBchapter(Exponential and logarithmic expressions and functions)
## DBsection(Applications and models - radioactive decay)
## Institution(NAU)
## MLT(FindHalfLife)
## Level(4)
## KEYWORDS('exponential model', 'decay')
##ENDDESCRIPTION

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = random(.80,.90,.01);
$c = random(180,260,10);
$d = random(5,18,1);

$e = Round($b*$c,1);

BEGIN_TEXT
A particular radioactive isotope decays from $c milligrams (mg) to $e mg in $d days.  Find the half life of the isotope.
$BR
Your answer is \{ans_rule(15) \} days.
$BR
END_TEXT

$ans = -$d * ln(2)/ln($b);

ANS(std_num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
