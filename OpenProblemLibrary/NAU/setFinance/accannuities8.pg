##KEYWORDS('percent')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGasu.pl"
);

TEXT(&beginproblem);

$b = random(5,15,1);
@m = (12,4,2,1);
@adj = ("monthly","quarterly","semi-annually","yearly");
@nums = (2,3,4);
@quant = ("double","triple","quadruple");
$ind = random(0,3,1);
$ind2 = random(0,2,1);
$zahl = $m[$ind];
$readj = $adj[$ind];
$requant = $quant[$ind2];
$renums = $nums[$ind2];


TEXT(EV2(<<EOT));
What nominal annual rate of interest compounded $readj is required to $requant
an investment in $b years?
$BR
Rate = \{ans_rule(15)\} $PERCENT
$BR
EOT

$ans = ($renums**(1/($b*$zahl))-1)*100*$zahl;
&ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
