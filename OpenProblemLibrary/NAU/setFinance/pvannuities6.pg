##KEYWORDS('percent')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGasu.pl"
);

TEXT(&beginproblem);

$D = random(1,6,1)*100;
$P = random(3,9,1)*10;
$b = random(2,5,1);

$n = $b*12;

$c = random(125,325,25)/100;
$r = $c/100;

@stores = ("Stereo Inc.","Sounds-R-Us","Woofers Inc.","Hi-Decibels Auto Audio");
$ind = random(0,3,1);
$restores = $stores[$ind];


TEXT(EV2(<<EOT));
$restores sells a stereo system for $DOLLAR$D down and monthly payments of 
$DOLLAR$P for the next $b years.
If the interest rate is $c$PERCENT per month, find:
$BR
$BR
a) The cost of the stereo.
$BR
Answer  = $DOLLAR \{ans_rule(20)\}
$BR
$BR
b) The total amount of interest paid.
$BR
Answer = $DOLLAR \{ans_rule(20)\}
EOT

$V = $P*(1-(1+$r)**(-$n))/$r;
$Cost = $V + $D;

&ANS(num_cmp($Cost));

$I = $P*12*$b - $V;

&ANS(num_cmp($I));

ENDDOCUMENT();        # This should be the last executable line in the problem.
