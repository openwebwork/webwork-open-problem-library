## DBsubject(Financial mathematics)
## DBchapter(Interest)
## DBsection(Compound interest)
## Level(3)
## KEYWORDS('percent')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGasu.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);

$c1 = random(2,15,1);
$c2 = $c1 - random(3,18,5)/100;

$r1 = $c1/100;
$r2 = $c2/100;

@m1 = (12,4,2,1);
@m2 = (365,12,4,2);

@adj1 = ("monthly","quarterly","semi-annually","yearly");
@adj2 = ("daily","monthly","quarterly","semi-annually");

$ind = random(0,3,1);

$zahl1 = $m1[$ind];
$zahl2 = $m2[$ind]; 

$readj1 = $adj1[$ind];
$readj2 = $adj2[$ind];


$A1 = (1+$r1/$zahl1)**$zahl1;
$A2 = (1+ $r2/$zahl2)**$zahl2;

TEXT(EV2(<<EOT));
In general, which rate yields the larger amount in one year?
$BR
$BR
(A)  $c1$PERCENT compounded $readj1
$BR
$BR
(B)  $c2$PERCENT compounded $readj2
$BR
$BR
Input $BITALIC A $EITALIC or $BITALIC B $EITALIC or $BITALIC same $EITALIC
here: \{ans_rule(10)\}

$BR $BITALIC same $EITALIC indicates the rates yield the same amount after one year
EOT

if($A1 > $A2) {$ans = "A";}
if($A1 < $A2)  {$ans = "B";} 
if($A1 == $A2)  {$ans = "same";}
&ANS(std_str_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
