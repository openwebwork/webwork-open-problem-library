##DESCRIPTION
##   Evaluation of a simple algebraic expression
##ENDDESCRIPTION

## DBsubject(Financial mathematics)
## KEYWORDS('percent')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGasu.pl"
);

TEXT(&beginproblem);

$P = random(1,10,1)*100;
$b = random(2,18,1);
if($b==12) {
  $b=8;
}

$c = random(3,18,1);
$r=$c/100;

TEXT(EV2(<<EOT));
Find the amount accrued if $DOLLAR$P is invested at  $c$PERCENT compounded monthly 
for $b months.
$BR
Amount = $DOLLAR \{ans_rule(20)\}
EOT
$ans = $P*(1+$r/12)**$b;

&ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
