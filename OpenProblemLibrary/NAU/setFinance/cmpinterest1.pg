## DBsubject(Financial mathematics)
## DBchapter(Interest)
## DBsection(Compound interest)
## MLT(value_later)
## Level(3)
## KEYWORDS('percent')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGasu.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);

$P = random(2,12,1)*100;
$b = random(2,7,1);
$c = random(3,18,1);
$r=$c/100;


TEXT(EV2(<<EOT));
Find the accumulated amount after $b years  if $DOLLAR$P is invested at $c$PERCENT
compounded:
$BR
$BR
a) Annually 
$BR
Accumulated Amount = $DOLLAR \{ans_rule(20)\}

$BR
$BR
b) Semiannually
$BR
Accumulated Amount= $DOLLAR \{ans_rule(20)\}

$BR
$BR
c) Quarterly
$BR
Accumulated Amount= $DOLLAR \{ans_rule(20)\}

$BR
$BR
d) Monthly
$BR
Accumulated Amount= $DOLLAR \{ans_rule(20)\}

EOT
$ans1 = $P*(1+$r)**$b;
&ANS(num_cmp($ans1));
$ans2 = $P*(1+$r/2)**($b*2);
&ANS(num_cmp($ans2));
$ans3 = $P*(1+$r/4)**($b*4);
&ANS(num_cmp($ans3));
$ans4 = $P*(1+$r/12)**($b*12);
&ANS(num_cmp($ans4));

ENDDOCUMENT();        # This should be the last executable line in the problem.
