DOCUMENT();     
loadMacros(
  "PGstandard.pl",
  "unionMacros.pl",
  "unionTables.pl",
  "PGnauBinpacking.pl",
  "PGcourse.pl"
);

TEXT( $BEGIN_ONE_COLUMN );
TEXT(&beginproblem);

@list = ();
$min = 1;
$max = 10;
$binmin = ceil( $max*1.1 );
$binmax = ceil( $max*1.5 );
$size = random( 10, 15 ,1) ;

for($i = 0;$i < $size; $i++){
  push @list, random($min,$max,1);
}

$binsize = random( $binmin, $binmax, 1 );
@newlist = PGnextfit( $binsize, @list );

for($i = 0; $i < $size; $i++){
  push @row1, $list[$i];
  push @row2, ans_rule(1);
  push @eval, num_cmp($newlist[$i]);
}

BEGIN_TEXT

The list \{join", ",@list\} is to be packed in bins of size $binsize using 
the next-fit algorithm. For each value of the list determine the corresponding 
bin number. Enter the bin number in the box directly below the list value.
$PAR
\{ begintable( $size ) \}
\{ row( @row1 ) \}
\{ row( @row2 ) \}
\{ endtable() \}     

END_TEXT

ANS(@eval);

TEXT( $END_ONE_COLUMN );
ENDDOCUMENT();      
