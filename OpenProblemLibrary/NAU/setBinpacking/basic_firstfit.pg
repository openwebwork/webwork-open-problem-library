DOCUMENT();     
loadMacros("PGstandard.pl",     
           "unionMacros.pl",
	   "unionTables.pl", 
           "PGnauBinpacking.pl",   
);     

TEXT( $BEGIN_ONE_COLUMN );
TEXT(&beginproblem);

$min = 1;
$max = 10;
$binmin = ceil( $max*1.1 );
$binmax = ceil ($max*1.5 );
$size = random( 10, 15 ,1 );

for( $i = 0; $i < $size; $i++){
  push @list, random( $min, $max, 1 );
}

$binsize = random( $binmin, $binmax, 1 );
@newlist = PGfirstfit( $binsize, @list );

for($j = 0; $j < $size; $j++){
  push @row1, $list[$j];
  push @row2, ans_rule( 1 );
  push @eval, num_cmp( $newlist[$j] );
}

BEGIN_TEXT

The list \{join", ",@list\} is to be packed in bins of size $binsize using 
the first-fit algorithm. For each value of the list determine the corresponding 
bin number. Enter the bin number in the box directly below the 
list value.
$PAR
\{ begintable( $size ) \}
\{ row( @row1 ) \}
\{ row( @row2 ) \}
\{ endtable() \}     


END_TEXT

ANS(@eval);

TEXT( $END_ONE_COLUMN );
ENDDOCUMENT();      