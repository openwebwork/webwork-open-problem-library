DOCUMENT();     
loadMacros(
  "PGstandard.pl",
  "PGnauBinpacking.pl",
  "unionMacros.pl",
  "unionTables.pl",
  "PGcourse.pl"
);

TEXT( $BEGIN_ONE_COLUMN );
TEXT(&beginproblem);

$min = 1;
$max = 10;
$binmin = ceil( $max*1.1 );
$binmax = ceil( $max*1.5 );
$size = random( 10, 15, 1 );

for($i = 0; $i < $size; $i++){
  push @list, random( $min, $max, 1 );
}

$binsize1 = random( $binmin, $binmax, 1 );
@newlist1 = PGworstfit( $binsize1, @list );

for($i = 0; $i < $size; $i++){
  push @row1, $list[$i];
  push @row2, ans_rule( 1 );
  push @eval1, num_cmp( $newlist1[$i] );
}
  
@declist = PGdec_sort( @list );
@newlist2 = PGdworstfit( $binsize1, @list );

for( $i = 0; $i < $size; $i++ ){
  push @row3, $declist[$i];
  push @row4, ans_rule( 1 );
  push @eval2, num_cmp( $newlist2[$i] );
}
BEGIN_TEXT

The list \{join", ",@list\} is to be packed in bins of size $binsize1 using 
the worst-fit algorithm. For each value of the list determine the corresponding 
bin number.Enter the bin number in the box directly below the list value.
$PAR
\{ begintable( $size ) \}
\{ row( @row1 ) \}
\{ row( @row2 ) \}
\{ endtable() \} 
$PAR 
Next we sort the given list in order of decreasing size to obtain 
\{join ", ", @declist\}.  Now use the worst-fit-decreasing heuristic to pack 
the list into bins of size $binsize1. 
$PAR
\{ begintable( $size ) \}
\{ row( @row3 ) \}
\{ row( @row4 ) \}
\{ endtable() \}  

END_TEXT      		     

ANS(@eval1);
ANS(@eval2);

TEXT( $END_ONE_COLUMN );
ENDDOCUMENT(); 
