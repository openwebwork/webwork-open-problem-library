TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
$p = random(80,99,1)/100;
@dice = ("2's","3's","4's","5's","6's","7's","8's","9's","10's","11's","12's");
@prob = (1,2,3,4,5,6,5,4,3,2,1);
$fac = random(2,5,1);
$num = 180+$fac*36;
$ind = random(0,10,1);
$redice = $dice[$ind];
$reprob= $prob[$ind]/36;
$center = $num*$reprob;


$value = normal_distr($p/2);
$sig = sqrt($num*$reprob*(1-$reprob));
$ans = $sig*$value;


BEGIN_TEXT
Under the assumption that a pair of dice is fair, the probability is $p that the number of $redice  appearing in $num throws of the dice will lie within $center +/- K. What is K?
$PAR
K = \{ans_rule(20)\}$BR$BR

END_TEXT

ANS(num_cmp($ans,tol=>1));



