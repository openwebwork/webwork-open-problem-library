sub cdf {
my ($x,$a,$b,$p) = @_;
$value = normal_prob(($a-$x)/$x,($b-$x)/$x)-$p;
}

$pi=4*atan(1);

sub dcdf {
my ($x,$a,$b) = @_;
$value = exp(-($a**2+$b**2+$x**2)/(2*$x**2))*($a*exp(($b**2+2*$a*$x)/(2*$x**2))-$b*exp(($a**2+2*$b*$x)/(2*$x**2)))/(sqrt(2*$pi)*$x**2);
}

$x0 = $lim2;
$x1 = $x0 - cdf($x0,-$lim1,$lim2,$p)/dcdf($x0,-$lim1,$lim2);
