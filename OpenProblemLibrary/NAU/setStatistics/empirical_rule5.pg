# Course: Qauntitative Reasoning

DOCUMENT();     
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$country = list_random( 'American', 'Canadian', 'English', 'French', 'German', 'Russian' );
$mean = random( 65, 72, .1 );
$sd = random( 2, 6, .1 );

@val = ( .67 * $sd, $sd, 2 * $sd, 3 * $sd );
@slice1 = NchooseK( 4, 3 );

$a = $mean - $val[$slice1[0]];
$b = $mean + $val[$slice1[0]];
$fact1 = list_random( -1, 1 );
$c = $mean + ( $val[$slice1[1]] * $fact1 );
$fact2 = list_random( -1, 1 );
$d = $mean + ( $val[$slice1[2]] * $fact2 );
   
@quest = ('Between '.$a.' and '.$b.' inches tall?', 
          ' Under '.$c.' inches tall?', 
	  'Over '.$d.' inches tall?' );

if( $slice1[0] == 0 ){ 
  $ans1 = 50;
} 
elsif( $slice1[0] == 1 ){ 
  $ans1 = 68;
} 
elsif( $slice1[0] == 2 ) { 
  $ans1 = 95;
} 
elsif( $slice1[0] == 3 ) { 
  $ans1 = 99.7;
}

if( $slice1[1] == 0 ){ 
  if( $fact1 == 1 ){ 
    $ans2 = 75;
  } else{ 
    $ans2 = 25; 
  }
} elsif( $slice1[1] == 1 ){ 
  if( $fact1 == 1 ){ 
    $ans2 = 84;
  } else{ 
    $ans2 = 16;  # this was 14 Nandor
  }
} elsif( $slice1[1] == 2 ){ 
  if( $fact1 == 1 ){ 
    $ans2 = 97.5;
  } else{ 
    $ans2 = 2.5;
  }
} elsif( $slice1[1] == 3 ){ 
  if( $fact1 == 1 ){ 
    $ans2 = 99.85;
  }else{ 
    $ans2 = .15;
  }
}

if( $slice1[2] == 0 ){ 
  if( $fact2 == -1 ){ 
    $ans3 = 75;
  } else{ 
    $ans3 = 25;
  }
} elsif( $slice1[2] == 1 ){ 
  if( $fact2 == -1 ){ 
    $ans3 = 84;
  } else{ 
    $ans3 = 16; # 14; Nandor for Terry
  }
} elsif( $slice1[2] == 2 ) { 
  if( $fact2 == -1 ){ 
    $ans3 = 97.5;
  } else{ 
    $ans3 = 2.5;
  }
} elsif( $slice1[2] == 3 ) { 
  if( $fact2 == -1 ){ 
    $ans3 = 99.85;
  }else{ 
    $ans3 = 0.15;
  }
}

@ans = ( $ans1, $ans2, $ans3 );
@slice2 = NchooseK( 3, 3 );

BEGIN_TEXT

The heights of $country men are normally distributed with a mean of $mean inches and a standard deviation of $sd
inches. According to the empirical rule, what percentage of $country men are:$PAR  
(a) $quest[$slice2[0]] $BR
Answer: \{ans_rule( 15 ) \}$PERCENT $PAR
(b) $quest[$slice2[1]] $BR
Answer: \{ans_rule( 15 ) \}$PERCENT $PAR
(c) $quest[$slice2[2]] $BR
Answer: \{ans_rule( 15 ) \}$PERCENT 

END_TEXT

ANS( num_cmp( $ans[$slice2[0]], relTol=>'2' ) );
ANS( num_cmp( $ans[$slice2[1]], relTol=>'2' ) );
ANS( num_cmp( $ans[$slice2[2]], relTol=>'2' ) );

ENDDOCUMENT();
