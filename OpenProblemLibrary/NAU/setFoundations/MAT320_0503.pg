$cmc = new_checkbox_multiple_choice();

$cmc -> qa ("Determine which of these relations are symmetric. The variables x, y, x', y' represent integers.", 
            $sy[0], $sy[1],$sy[2]);

$cmc-> extra ($sn[0], $sn[1]);

BEGIN_TEXT

\{ $cmc -> print_q \}
$BR
