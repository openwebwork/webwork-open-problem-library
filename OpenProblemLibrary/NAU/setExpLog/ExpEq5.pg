DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=non_zero_random(-4,4,2);
$b=random(-3,3,2);
$c=random(3,9,2);

BEGIN_TEXT
Find the solution of the exponential equation
\[
4^{$a x + $b}= 2^{$c}.
\]

$BR

\(x=\) \{ans_rule(25) \}
$BR
END_TEXT


$ans1 = ($c-2*$b)/(2*$a);
ANS(std_num_cmp($ans1));

ENDDOCUMENT(); 
