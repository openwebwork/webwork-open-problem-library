DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGasu.pl",
  "extraAnswerEvaluators.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);

$showPartialCorrectAnswers = 1;

$n=random(2,5,1);

do {
$d=random(2,5,1);
$divisor=gcd($n, $d);
} until ($divisor==1);

$e=random(2,4,1);

$N=($n)**($e);
$D=($d)**($e);

$ans1=$e;
$ans2=-$e;

BEGIN_TEXT
Solve the given equations for \( x \).

$PAR
\( (\frac{$n}{$d})^x = \frac{$N}{$D} \)
$BR
\( x = \) \{ans_rule(20) \}
$PAR
$PAR
\( (\frac{$n}{$d})^x = \frac{$D}{$N} \)
$BR
\( x = \) \{ans_rule(20) \}

END_TEXT

&ANS(std_num_cmp($ans1));
&ANS(std_num_cmp($ans2));

ENDDOCUMENT();     
