DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=non_zero_random(-4,4,2);
$b=random(-3,5,2);

BEGIN_TEXT
Find the solution of the exponential equation
\[
3^{$a x + $b}= \sqrt 3.
\]

$BR

\(x=\) \{ans_rule(25) \}
$BR
END_TEXT


$ans1 = (1/2-$b)/$a;
ANS(std_num_cmp($ans1));

ENDDOCUMENT();
