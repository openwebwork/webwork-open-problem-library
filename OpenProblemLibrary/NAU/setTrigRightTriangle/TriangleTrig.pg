DOCUMENT();     
loadMacros(
  "PGstandard.pl",
  "PGnauStats.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem) ;
$showPartialCorrectAnswers = 1;

@functions = ('sin', 'cos', 'tan', 'cot', 'sec', 'csc');

($first, $secnd) = NchooseK(59,2);

$first++;
$secnd++;

#$first = random(1, 60, 1);
#do {
# $secnd = random(1, 60, 1);
#} while ($secnd == $first);

$func = random(0, 5, 1);

if ($first > $secnd){
  $tmp = $first;
  $first = $secnd;
  $secnd = $tmp;
}

if ($func == 0){	#sin
  $top = $first;
  $bot = $secnd;
  $opp = $first;
  $hyp = $secnd;
  $adj = sqrt($hyp*$hyp - $opp*$opp);
} elsif ($func == 1){	#cos
  $top = $first;
  $bot = $secnd;
  $adj = $first;
  $hyp = $secnd;
  $opp = sqrt($hyp*$hyp - $adj*$adj);
} elsif ($func == 2){	#tan
  $top = $first;
  $bot = $secnd;
  $opp = $first;
  $adj = $secnd;
  $hyp = sqrt($opp*$opp + $adj*$adj);
} elsif ($func == 3){	#cot
  $top = $first;
  $bot = $secnd;
  $adj = $first;
  $opp = $secnd;
  $hyp = sqrt($opp*$opp + $adj*$adj);
} elsif ($func == 4){	#sec
  $top = $secnd;
  $bot = $first;
  $adj = $first;
  $hyp = $secnd;
  $opp = sqrt($hyp*$hyp - $adj*$adj);
} else {		#csc
  $top = $secnd;
  $bot = $first;
  $opp = $first;
  $hyp = $secnd;
  $adj = sqrt($hyp*$hyp - $opp*$opp);
} 


$str = "$BR";
for ($i = 0; $i < 6; $i++){
  $str .="\(\$functions[$i](\theta)\) = ".ans_rule(10)."$BR";
}

if ($bot == 1){
  $disp = $top;
} else {
  $disp = "\frac{$top}{$bot}";
}

BEGIN_TEXT
Assume that \(\theta\) is an acute angle in a right triangle.  Find the values 
of the six triginometric functions given the following:$BR$BR
\[\$functions[$func](\theta) = $disp.\]
$PAR
$str
END_TEXT

ANS(num_cmp($opp/$hyp));
ANS(num_cmp($adj/$hyp));
ANS(num_cmp($opp/$adj));
ANS(num_cmp($adj/$opp));
ANS(num_cmp($hyp/$adj));
ANS(num_cmp($hyp/$opp));

ENDDOCUMENT();
