DOCUMENT();     
loadMacros(
  "PGstandard.pl",
  "PGnauStats.pl",
  "PGasu.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem) ;
$showPartialCorrectAnswers = 1;

@functions = ('sin', 'cos', 'tan', 'cot', 'sec', 'csc');
@quadrant = ('I', 'II', 'III', 'IV');

($first, $secnd) = NchooseK(59,2);
$quad = random(1,4,1);
$sign = 1;

$first++;
$secnd++;

if ($first > $secnd){
  $tmp = $first;
  $first = $secnd;
  $secnd = $tmp;
}

$func = random(0, 5, 1);

$adj = int($quad/2)*2;
if ($quad % 2 == 0){$ref = -1;}
else {$ref = 1;}

if ($func == 0){	#sin
  if ($quad > 2){$sign = -1;}
  $angle = pi*$adj/2 + $ref * arcsin($first/$secnd);
  $top = $first*$sign;
  $bot = $secnd;
} elsif ($func == 1){	#cos
  if ($quad == 2 || $quad == 3){$sign = -1;}
  $angle = pi*$adj/2 + $ref * arccos($first/$secnd);
  $top = $first*$sign;
  $bot = $secnd;
} elsif ($func == 2){	#tan
  if ($quad % 2 == 0){$sign = -1;}
  $angle = pi*$adj/2 + $ref * arctan($first/$secnd);
  $top = $first*$sign;
  $bot = $secnd;
} elsif ($func == 3){	#cot
  if ($quad % 2 == 0){$sign = -1;}
  $angle = pi*$adj/2 + $ref * arctan($secnd/$first);
  $top = $first*$sign;
  $bot = $secnd;
} elsif ($func == 4){	#sec
  if ($quad == 2 || $quad == 3){$sign = -1;}
  $angle = pi*$adj/2 + $ref * arccos($first/$secnd);
  $top = $secnd*$sign;
  $bot = $first;
} else {		#csc
  if ($quad > 2){$sign = -1;}
  $angle = pi*$adj/2 + $ref * arcsin($first/$secnd);
  $top = $secnd*$sign;
  $bot = $first;
}


$str = "$BR";
for ($i = 0; $i < 6; $i++){
  $str .="\(\$functions[$i](\theta)\) = ".ans_rule(10)."$BR";
}

if ($bot == 1){
  $disp = "$top";
} else {
  $disp = "\frac{$top}{$bot}";
}

BEGIN_TEXT
Assume that \(\theta\) is an angle in quadrant $quadrant[$quad-1].  Find the values 
of the six triginometric functions given the following:$BR$BR
\[\$functions[$func](\theta) = $disp.\]
$PAR
$str
END_TEXT

ANS(exact_no_trig(sin($angle)));
ANS(exact_no_trig(cos($angle)));
ANS(exact_no_trig(tan($angle)));
ANS(exact_no_trig(cot($angle)));
ANS(exact_no_trig(sec($angle)));
ANS(exact_no_trig(csc($angle)));

ENDDOCUMENT();
