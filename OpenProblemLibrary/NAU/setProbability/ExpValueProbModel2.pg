DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGgraphmacros.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


@out=();
push @out, random(0,6,.5) foreach 0..3;
@outcome=num_sort(@out);

$a=random(0.05,.40,.05);
$b=random(0.05,.40,.05);
$ans1=1-$a-$b-0.15;
@prob=($a,$b,0.15,$ans1);


$ans=0;
for($i=0; $i<4; $i++){
    $ans=$ans+$outcome[$i]*$prob[$i];
}

BEGIN_TEXT

Below is a probability model.$BR
\{begintable(9)\}
\{row("Outcome", $outcome[0], $outcome[1], $outcome[2], $outcome[3])\} 
\{row("Probability", $prob[0], $prob[1], $prob[2], $prob[3])\} 
\{endtable()\}  $BR $BR
Find the expected value of the probability model. $BR  $BR
\{ans_rule(30)\}
$BR
END_TEXT

ANS(num_cmp($ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.

