DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGmatrixmacros.pl",
  "PGnumericalmacros.pl",
  "PGmorematrixmacros.pl",
  "PGasu.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

#PART ONE
$n1=non_zero_random(-6, 6, 1);

$ans1=$n1*180;


#PART TWO
$n2=random(-12, 12, .01);

$ans2=$n2*180/$PI;


#PART THREE
$n3=random(0, 300, .01);

$ans3=$n3*$PI/180;


#PART FOUR
$n4=random(-300, -1, .1);

$ans4=$n4*$PI/180;

BEGIN_TEXT
$PAR
Convert each radian measure to degree measure.
$BR
Round your answers to four decimal places, if needed.   
$PAR
\( $n1 \pi \) radians =  \{ans_rule(10) \} degrees.
$PAR
\( $n2 \) radians =  \{ans_rule(10) \} degrees.
$PAR
$PAR
Convert each degree measure to radian measure.
$BR
Round your answers to four decimal places, if needed.   
$PAR
\( $n3^\circ \) =  \{ans_rule(10) \} radians.
$PAR
\( $n4^\circ \) =  \{ans_rule(10) \} radians.

END_TEXT

#ANSWER PART ONE
ANS(num_cmp($ans1));


#ANSWER PART TWO
ANS(num_cmp($ans2));


#ANSWER PART THREE
ANS(num_cmp($ans3));


#ANSWER PART FOUR
ANS(num_cmp($ans4));


ENDDOCUMENT(); 
