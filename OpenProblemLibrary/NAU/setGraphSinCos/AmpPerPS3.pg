DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGasu.pl",
"extraAnswerEvaluators.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;





do {
$nn = random(2,13,1);
$dd = random(2,13,1);
$divisor=gcd($nn,$dd);
}  until ($divisor==1);


do {
$n = random(2,13,1);
$d = random(2,13,1);
$divisor=gcd($n,$d);
}  until (($n<$d)&&($divisor==1));










@function=('sin', 'cos');
$pickf=random(0,1,1);

$picks=random(0,1,1);
@sign=('-','+');

$k=random(-15,15,1);

$r=non_zero_random(-10,10,1);



BEGIN_TEXT
Determine the amplitude, period, and phase shift for the function
$BR
 \(y=$r \$function[$pickf] (\frac{$nn\pi}{$dd}x$sign[$picks]\frac{$n\pi}{$d})+$k \)
$BR
Type 'pi' for \(\pi\) in your answer(s), if needed.
$BR
Amplitude \{ans_rule(15) \}
$BR
Period \{ans_rule(15) \}
$BR
Phase Shift \{ans_rule(15) \}
$BR
END_TEXT

$ans1=abs($r);
$ans2=2/($nn/$dd);
$ans3=(-2*$picks+1)*($n/$d)/($nn/$dd);

ANS(std_num_cmp($ans1));
ANS(std_num_cmp($ans2));
ANS(std_num_cmp($ans3));

ENDDOCUMENT();        # This should be the last executable line in the problem.