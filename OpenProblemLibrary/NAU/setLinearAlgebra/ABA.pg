{
$a11= random(-5,5,1);
$a21= random(-5,5,1);
$a31= random(-5,5,1);
$a12= random(-5,5,1);
$a22= random(-5,5,1);
$a32= random(-5,5,1);
$a13= $a11+2*$a12;
$a23= $a21+2*$a22;
$a33= $a31+2*$a32;
$A = Matrix([
              [$a11,$a12,$a13],
              [$a21,$a22,$a23],
              [$a31,$a32,$a33]
            ]);
$B = Matrix([
              [$a11,$a12,1],
              [$a21,$a22,0],
              [$a31,$a32,0]
            ]);
redo if ($B->det==0);
}
$B=$B->inverse;

sub mycheck {
  my ($correct, $student, $ansHash) = @_;
  return ( $A*$student*$A == $A );
# the requirement ($A*$student*$A == $A && $student*$A*$student == $student) is also possible 
}


Context()->texStrings;
BEGIN_TEXT
