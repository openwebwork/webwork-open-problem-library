DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGmatrixmacros.pl",
  "PGnumericalmacros.pl",
  "PGmorematrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$a = non_zero_random(-5,5,1);
$b = random(-5,5,1);
$c = random(-5,5,1);
do { $d = random(-5,5,1); } until ($a*$d-$b*$c != 0);

$p = non_zero_random(-5,5,1);
$q = random(-5,5,1);
$r = random(-5,5,1);
do { $s = random(-5,5,1); } until ($p*$s-$q*$r != 0);

$x = $a*$p+$c*$q;
$y = $b*$p+$d*$q;
$w = $a*$r+$c*$s;
$z = $b*$r+$d*$s;

BEGIN_TEXT

Find the inverse of \( AB \) if 

\{
mbox('\( A^{-1}= \)',display_matrix([[$a,$b],[$c,$d]]) )
\}
and
\{
mbox('\( B^{-1}= \)', display_matrix([[$p,$q],[$r,$s]]),'.' )
\}

$BR

\{
mbox('\( (AB)^{-1}= \)', answer_matrix(2,2,10) )
\}

END_TEXT

ANS(num_cmp($x));
ANS(num_cmp($y));
ANS(num_cmp($w));
ANS(num_cmp($z));

ENDDOCUMENT();
