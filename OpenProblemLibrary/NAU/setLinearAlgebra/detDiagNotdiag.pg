DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "AnswerFormatHelp.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
$showPartialCorrectAnswers = 1;
TEXT(beginproblem()); 

Context('Numeric');

$a=non_zero_random(-9,9,1);
$a++ if ($a==-1);
$b=$a+1;
$n=random(50,100,1);
$ans = Formula("($a+($n-1)*$b)($a-$b)^($n-1)");

Context()->texStrings;
BEGIN_TEXT
Find the determinant of the matrix
\[ A=\left [ \matrix { 
$a & $b &    & \cdots & $b  \\ 
$b & $a & $b  & \cdots & $b  \\
  &   & \ddots &    &    \\
$b & \cdots  &  $b  & $a & $b  \\
$b & \cdots  &    & $b & $a  \\
}\right] \in \mathbb{R}^{$n\times $n}. \]
$BR

\( \det(A) = \) \{ ans_rule(10) \}


END_TEXT
Context()->normalStrings;

ANS( $ans->cmp() );

;

ENDDOCUMENT();

