DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x1 = random(-10, 10);
$x2 = non_zero_random(-10, 10);
$x3 = random(-10, 10);

{ $a = non_zero_random(-10, 10);
redo if ($a==1 || $a==-1);
}

$b = $a*$x2;

BEGIN_TEXT
$PAR
Let \( \mathbf x \) = ($x1, $x2, $x3) be in \( \mathbf R ^3 \) and \(a\) be in \( \mathbf R \). Then 

$PAR
\( a \mathbf x \) = (\{ ans_rule(6) \}, $b  , \{ ans_rule(6) \})
END_TEXT
ANS(num_cmp($a*$x1));
ANS(num_cmp($a*$x3));

ENDDOCUMENT(); 
