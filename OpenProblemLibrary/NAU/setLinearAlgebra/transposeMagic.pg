ANS( $multians->cmp() );
ANS( $LB->cmp( checker=>~~&mycheck ) );
ANS( Formula("-1")->cmp() ); 
ANS( Formula("-1+x+x^2-x^3")->cmp() ); 
ANS( $multians2->cmp() );

