DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x1 = random(-10, 10);
$x2 = random(-10, 10);
$x3 = non_zero_random(-10, 10);

$y1 = random(-10, 10);
$y2 = random(-10, 10);
$y3 = random(-10, 10);

{ $a = non_zero_random(-10, 10);
redo if ($a==1 || $a==-1);
}

$b = $a*$x3+$y3;

BEGIN_TEXT
$PAR
Let \( \mathbf x \) = ($x1, $x2, $x3) and \( \mathbf y \) = ($y1, $y2, $y3) be in \( \mathbf R ^3 \) and \(a\) be in \( \mathbf R \). Then 

$PAR
\( a \mathbf x + \mathbf y\) = (\{ ans_rule(6) \}, \{ ans_rule(6) \}, $b)
END_TEXT
ANS(num_cmp($a*$x1+$y1));
ANS(num_cmp($a*$x2+$y2));

ENDDOCUMENT(); 
