DOCUMENT();     
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT( beginproblem ( ) );
$showPartialCorrectAnswers = 1;

$a = random( 120, 700, 1 );
$b = $a + 1;
$c = $a + 2;
$sum = $a + $b + $c;

BEGIN_TEXT
The sum of three consecutive natural numbers is $sum, find the numbers.
$BR $BR 
The three numbers in increasing order are  \{ans_rule(10) \}, \{ans_rule(10) \}, and \{ans_rule(10) \}.
$BR$BR
END_TEXT

ANS(std_num_cmp($a));
ANS(std_num_cmp($b));
ANS(std_num_cmp($c));

ENDDOCUMENT();
