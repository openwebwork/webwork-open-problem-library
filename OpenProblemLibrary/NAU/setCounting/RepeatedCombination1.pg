DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
);

Context("Numeric");

$a = random(1,4,1);
if ($a == 1) {
  $word = 'accommodate';
  $a = fact(11)/fact(2)/fact(2)/fact(2)/fact(2);
  $answer = Compute($a);
}
if ($a == 2) {
  $word = 'needlessly';
  $a = fact(10)/fact(3)/fact(2)/fact(2);
  $answer = Compute($a);
}
if ($a == 3) {
  $word = 'masslessness';
  $a = fact(12)/fact(6)/fact(2);
  $answer = Compute($a);
}
if ($a == 4) {
  $word = 'metamorphosis';
  $a = fact(13)/fact(2)/fact(2)/fact(2);
  $answer = Compute($a);
}


TEXT(beginproblem());

Context()->texStrings;
BEGIN_TEXT

How many anagrams can be created from the word '$word' if the new words do not need to be meaningful?
\{ ans_rule(35) \}

END_TEXT

Context()->normalStrings;

ANS( $answer->cmp() );

ENDDOCUMENT();
