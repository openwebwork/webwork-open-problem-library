DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGasu.pl",
  "extraAnswerEvaluators.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);

$x1=random(4,6,1);
$y1=random(18,20,1);

$x2=random(12,14,1);
$y2=random(18,20,1);

$x3=random(15,17,1);
$y3=random(12,14,1);

$x4=random(8,10,1);
$y4=random(2,4,1);

$ls1 = nicestring([$y2-$y1,$x1-$x2],['x','y']);
$ls2 = nicestring([$y3-$y2,$x2-$x3],['x','y']);
$ls3 = nicestring([$y4-$y3,$x3-$x4],['x','y']);
$ls4 = nicestring([$y1-$y4,$x4-$x1],['x','y']);
$ls5 = nicestring([0,1],['x','y']);
$ls6 = nicestring([1,0],['x','y']);


$r1=$x1*$y2-$x2*$y1;
$r2=$x2*$y3-$x3*$y2;
$r3=$x3*$y4-$x4*$y3;
$r4=$x4*$y1-$x1*$y4;

if ($r1>0){
 $s1="\le";
}else{
 $s1="\ge";
}
if ($r2>0){
 $s2="\le";
}else{
 $s2="\ge";
}
if ($r3>0){
 $s3="\le";
}else{
 $s3="\ge";
}
if ($r4>0){
 $s4="\ge";
}else{
 $s4="\le";
}

@xobj=($y1-$y2, $y2-$y3);
@yobj=($x2-$x1, $x3-$x2);
$index=random(0,1,1);
$c1=$xobj[$index];
$c2=$yobj[$index];

$obj=nicestring([$c1,$c2],['x','y']); 

if ($index==0){
 $zmax=$c1*$x1 + $c2*$y1;
 $x5=$x1;
 $y5=$y1;
 $x6=$x2;
 $y6=$y2;
}

if ($index==1){
 $zmax=$c1*$x2 + $c2*$y2;
 $x5=$x2;
 $y5=$y2;
 $x6=$x3;
 $y6=$y3;
}

$NO_SPACE = '@{}';

BEGIN_TEXT

Graph the system of inequalities and find each corner point.
\[ \left\{"\{"\}
\begin{array}{r${NO_SPACE}r${NO_SPACE}r}
 $ls1   & $s1 & $r1 \cr
 $ls2   & $s2 & $r2 \cr
 $ls3   & $s3 & $r3 \cr
 $ls4   & $s4 & $r4 \cr
 $ls5   & \ge & 0 \cr
 $ls6   & \ge & 0
\end{array} \right. \]
$BR
Determine the maximum value of \( z=$obj\) subject to the given system
of linear inequality constraints.
$PAR
The maximum value of \(z\) is \{ans_rule(10) \} at the corner point(s) 
\{ans_rule(20) \}. If there is more than one corner point, type the points separated by a comma
i.e.: (1,2),(3,4).

END_TEXT

ANS(num_cmp($zmax, mode=>'frac', tol=>0.005));
ANS(interval_cmp( "($x5,$y5), ($x6,$y6)", unions=>'no'));

ENDDOCUMENT();        # This should be the last executable line in the problem.

