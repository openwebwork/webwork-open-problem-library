DOCUMENT();

loadMacros("PGstandard.pl",
	   "PGnauGraphtheory.pl",
          );      

COMMENT('Please limit the number of trials.');

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$letters = join '','A'..'Z';
@graph = ();
@pics = ();
@size = ();
@labels = ();

for ($i = 0; $i < 4; $i++){
  $val = random(6,10,1);
  push @size, $val;
  $offset = random (0, 26 - $val, 1);
  push @labels, substr $letters, $offset, $val;
}

push @graph, GReulertrail_size($size[0]);
push @graph, GReulercircuit_size($size[1]);

if ($size[2] == 7){
  $size[2] = random(8,10,1);
  $offset = random (0, 26 - $size[2]-1,1);
  $labels[2] = substr $letters, $offset, $size[2];
}

$low = 2;
do {
  @tempdegrees=();
  for ($i = 0; $i < $size[2]; $i++) {
    push @tempdegrees, random($low, $size[2]-1,2);
  }
  $tempgraph = GRgraph_degrees(@tempdegrees);
  if ($tempgraph eq 'DNE'){
    $c = 1;
  } else {
    $c = GRncomponents_graph($tempgraph);
  }
} while ($c == 1);
push @graph, $tempgraph;

push @graph, GRnoneuler_size($size[3]);
for ($i = 0; $i < 4; $i++){
  push @pics, GRpic_graph_labels($graph[$i],$labels[$i]);
}

@trail = (1,1,0,0);
@circuit = (0,1,0,0);
@other = (1,1,1,1);
for ($i = 0; $i < 4; $i++){
  push @trail_labels, "Has Euler trail.";
  push @circ_labels, "Has Euler circuit.";
}

($table, $ans1, $ans2) = checkbox_table([@pics], [@trail], [@circuit],
					labels=>[@trail_labels, @circ_labels]);

##############################

BEGIN_TEXT
$BR
Which of the following graphs have Euler circuits or Euler trails?
$BR
$table
END_TEXT

$ans1;
$ans2;

ENDDOCUMENT();