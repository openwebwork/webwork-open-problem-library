DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGasu.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);

##   anglessums/diffs
@angle=(30,45,60,90,
        120,135,150,180,
	210,225,240,270,
	300,315,330,360
	);

##   number of anglesums to choose from 
$size=scalar @angle;

##   values of sine at angles
@values=(1/2,sqrt(2)/2,sqrt(3)/2,1,
         sqrt(3)/2,sqrt(2)/2,1/2,0,
	 -1/2,-sqrt(2)/2,-sqrt(3)/2,-1,
	 -sqrt(3)/2,-sqrt(2)/2,-1/2,0
	 );               

##   randomize which anglesum and anglediff
$anglesum=random(0,$size-1,1);
$anglediff=random(0,$size-1,1);

$alpha=random(2,$angle[$anglesum],1);
$beta=$angle[$anglesum]-$alpha;
$gamma=random($angle[$anglediff],2*$angle[$anglediff],1);
$delta=$gamma-$angle[$anglediff];

$ans1=$values[$anglesum];
$ans2=$values[$anglediff];


BEGIN_TEXT

$BR

Use an identity to find the exact value of each expression:

$BR
Note: You are not allowed to use decimals in your answer.

$PAR

\(\sin($alpha^\circ) \cos($beta^\circ)+\cos($alpha^\circ) \sin($beta^\circ)\)=\{ans_rule(20)\}

$PAR

\(\sin($gamma^\circ) \cos($delta^\circ)-\cos($gamma^\circ) \sin($delta^\circ)\)=\{ans_rule(20)\}


END_TEXT

ANS(exact_no_trig($ans1) );
ANS(exact_no_trig($ans2) );


ENDDOCUMENT(); 
