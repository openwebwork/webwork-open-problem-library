#DESCRIPTION
##  Calculus: Maximum and minimum values
##ENDDESCRIPTION


## DBsubject(Calculus - single variable)
## DBchapter(Applications of differentiation)
## DBsection(Summary of curve sketching)
## Date(01/11/2011)
## Institution(University of Minnesota and NAU)
## Author(Justin Sukiennik modified by Nandor Sieben)
## Level(2)
## MO(1)
## KEYWORDS('calculus', 'maximum', 'minimum', 'local', 'global', 'graph')

#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "answerHints.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);
#####################################################################

TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

#####################################################################

Context("Numeric");
Context()->strings->add(none=>{},EmptySet=>{alias=>"none"});

$a = random(3,4,1);
$b = random(0,2,1);

$ans1 = List(3,8);
$ans2 = List(2,5);
$ans3 = Compute("none");
$ans4 = Compute("2-$b");

###############################################################

$w = 400;  # graph size
$tw = 500; # graph size in TeX

$graph1 = init_graph(-1,-1,9,9,'axes'=>[0,0],'ticks'=>[10,10],'grid'=>[10,10],'size'=>[500,500]);

$p1 = FEQ("(1/2)*(x-2)^2+5-$b for x in (0,2) using color:blue weight:2");
$p2 = FEQ("$a-$b for x in [2,2] using color:blue weight:2");
$p3 = FEQ("6-(x-3)^2-$b for x in (2,5> using color:blue weight:2");
$p4 = FEQ("(-3/16)*(x-9)^2+5-$b for x in <5,8] using color:blue weight:2");

plot_functions($graph1,$p1,$p2,$p3,$p4);

###############################################################

Context()->texStrings;
BEGIN_TEXT
Use the given graph of the function on the interval \((0,8]\) to answer the following questions.
$PAR
$BCENTER
\{image(insertGraph($graph1),width=>$w,height=>$w,tex_size=>$tw)\}
$ECENTER $PAR
$HR
$BBOLD 1. $EBOLD Where does the function \(f\) have a local maximum?$BR
Answer (separate by commas): \(x = \) \{ans_rule(30)\} $PAR
$BBOLD 2. $EBOLD Where does the function \(f\) have a local minimum?$BR
Answer (separate by commas): \(x = \) \{ans_rule(30)\} $PAR
$BBOLD 3. $EBOLD What is the global maximum of \(f\)?$BR
Answer (write 'none' if there is none): \{ans_rule(20)\} $PAR
$BBOLD 4. $EBOLD What is the global minimum of \(f\)?$BR
Answer (write 'none' if there is none): \{ans_rule(20)\} $PAR
$HR
$BBOLD Note: $EBOLD $BITALIC You can click on the graph to enlarge the image.$EITALIC
$HR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans1->cmp );
ANS( $ans2->cmp );
ANS( $ans3->cmp->withPostFilter(AnswerHints(String("dne") => ["Write 'None' instead of 'DNE'.", checkTypes => 0, score => 0])));
ANS( $ans4->cmp );

ENDDOCUMENT();        # This should be the last executable line in the problem.
