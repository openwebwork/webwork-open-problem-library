DOCUMENT();        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
#  "PGgraphmacros.pl",
  "PGcourse.pl", 
);
#####################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

#####################################################################

Context("Numeric");
$a = random(60,99,1); #derivative order 
$b = list_random(-3,-2,-1.5,-0.5,0.5,1.5,2,3); #variable coefficient 
$fn = list_random("sin","cos"); 


if($fn eq "sin")
{

if (($a % 4) ==3){
$ans = Compute("-($b)^$a *cos($b x)");
}

if (($a % 4)== 0){
$ans = Compute("($b)^$a *sin($b x)");
}

if (($a % 4) == 1){
$ans = Compute("($b)^$a *cos($b x)");
}

if (($a % 4) == 2){
$ans = Compute("-($b)^$a *sin($b x)");
}
}

if($fn  eq "cos")
{

if (($a % 4) == 0){
$ans = Compute("-($b)^$a *cos($b x)");
}

if (($a % 4)== 1){
$ans = Compute("-($b)^$a *sin($b x)");
}

if (($a % 4) == 2){
$ans = Compute("-($b)^$a *cos($b x)");
}

if (($a % 4) == 3){
$ans = Compute("($b)^$a *sin($b x)");
}
}




#####################################################################
Context()->texStrings;
BEGIN_TEXT
Find \(\displaystyle \frac{d^{$a}}{dx^{$a}}{\textrm{ $fn}} ({$b} x) .\)
$PAR
$PAR
Answer: \{ans_rule(30)\} 
$PAR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS($ans->cmp());

ENDDOCUMENT();   
