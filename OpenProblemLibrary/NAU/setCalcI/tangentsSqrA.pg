DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$a = random(-10,10,1);
{
  $b = random(-10,10,1);
  redo if ($a==$b);
}
$c=($a+$b)/2;
$answer = Compute("$c");

TEXT(beginproblem());

Context()->texStrings;
BEGIN_TEXT
Let \(f(x) = x^2\). Find the first coordinate
of the intersection point of the two
tangent lines of \( f \) at \( $a \) and at
\( $b \).
$BR $BR
\{ ans_rule(35) \}
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp() );

ENDDOCUMENT();
