DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$a = random(-5,-1,1);
$b = random(1,5,1);
$k = random(2,4,1);
$ans = ($b*$b+$k*$b-$a*$a-$k*$a)/($b-$a);
$answer = Compute($ans);


TEXT(beginproblem());

Context()->texStrings;
BEGIN_TEXT

What is the average rate of change of the function \( x\mapsto x^2+$k x \) between $a and $b?
$BR $BR
Answer: \{ ans_rule(35) \}

END_TEXT

Context()->normalStrings;

ANS( $answer->cmp() );

ENDDOCUMENT();
