}





$graph = init_graph(-10,-10,10,10,axes =>[0,0], grid =>[10,10]);
$hermite_obj = new Hermite( [@xs],[@ys],[@slopes]);
$fun_obj = new Fun($hermite_obj->rf_f,$graph);

for ($i=0; $i<scalar @slopes; $i++) {
