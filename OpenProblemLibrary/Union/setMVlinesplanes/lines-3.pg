## DESCRIPTION
##   Parametric Equation for a Line
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Geometry)
## DBchapter(Vector geometry)
## DBsection(Lines)
## Date(8/23/07)
## Institution(Union College)
## MLT(lin_recover_point_vector_from_eqn)
## Level(3)
## MO(1)
## KEYWORDS('Parametric', 'Line', 'Vector')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector")->variables->are(t=>'Real');
Context()->reduction->set('(-x)-y'=>0);
$t = Formula('t');

#
#  The line p + tv
#
$P = non_zero_point3D();  ($x0,$y0,$z0) = $P->value;
$V = non_zero_vector3D(); ($a,$b,$c) = $V->value;

$x = ($x0+$a*$t)->reduce;
$y = ($y0+$b*$t)->reduce;
$z = ($z0+$c*$t)->reduce;

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose a line is given by the system of equations
$BBLOCKQUOTE
\(x = $x\),$BBR
\(y = $y\),$BBR
\(z = $z\).
$EBLOCKQUOTE
$PAR

Then the vector and point that were used to define this line
were
$BBLOCKQUOTE
\(\{Overline('v')\}\) = \{ans_rule(25)\}, and$BBR
\(p\) = \{ans_rule(25)\}.
$EBLOCKQUOTE

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($V->cmp);
ANS($P->cmp);

$showPartialCorrectAnswers = 1;

##################################################


;
ENDDOCUMENT();
