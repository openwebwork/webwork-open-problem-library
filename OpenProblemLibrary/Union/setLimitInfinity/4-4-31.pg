DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

Context("Numeric");

$c1 = random(2, 12, 1);
$c2 = random(3, 9, 2);
$p = random(5, 7, 1);

$f = Formula("{$c1 x^4 - $c2 x^2} / {5x^$p + 8}")->reduce;

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate
\[\lim_{x\to-\infty} $f .\]
$PAR
Limit = \{ans_rule(20)\}
$PAR
$INFINITY_MESSAGE
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;
ANS(Real(0)->cmp);

###################################


;
ENDDOCUMENT();
