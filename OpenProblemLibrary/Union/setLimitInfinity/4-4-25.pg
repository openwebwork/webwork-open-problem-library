DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

Context("Numeric");

$c = random(-6, -2, 1);
$p1 = random(2, 8, 2);
$p2 = random(3, 7, 2);

$f = Formula("$c x^$p1 + 3x^$p2 + 2")->reduce('(-x)-y'=>0,'(-x)+y'=>0);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate
\[\lim_{x\to-\infty} $f.\]
$PAR
Limit = \{ans_rule(20)\}
$PAR
$INFINITY_MESSAGE
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;
ANS((-(Infinity))->cmp);

###################################


COMMENT('MathObject version');
ENDDOCUMENT();
