DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

Context("Numeric");

$a1 = random(2,11,1);
$b1 = random(2,11,1);
$c1 = random(2,11,1);
$d1 = random(2,11,1);
$e1 = random(2,11,1);

$ans = Real(0);

$f = Formula("$a1 x + $b1");
$g = Formula("$c1 x^2- $d1 x + $e1");
$f_over_g = ($f/$g)->reduce;

###################################
#  Use an alignment to present the questions and answer rules
###################################

Context()->texStrings;
$alignment = new_aligned_list(
   equals => 1, ans_rule_len => 20, numbered => 1,
   row_spacing => 5, tex_spacing => "5pt"
);
$alignment->qa(
  "\(\displaystyle\lim_{x\to\infty}  $f_over_g\)", $ans->cmp,
  "\(\displaystyle\lim_{x\to-\infty} $f_over_g\)", $ans->cmp,
);
Context()->normalStrings;

###################################
# Main text

BEGIN_TEXT
Evaluate the following limits:
\{$alignment->print_q\}
$INFINITY_MESSAGE
END_TEXT

###################################
# Answer checking

$showPartialCorrectAnswers = 1;
ANS($alignment->correct_ans);


;
ENDDOCUMENT();
