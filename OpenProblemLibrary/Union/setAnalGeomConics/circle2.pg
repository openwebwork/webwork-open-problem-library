DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

# determine the endpoints of the diameter
$a = random(-10,0);
$b = random (-10,10);
$c = random (0,10);
$d = random (-10,10);

#calculate the center of the circle
$h = ($a+$c)/2;
$k = ($b+$d)/2;

#calculate the radius
$r = sqrt(($a-$c)**2+($b-$d)**2)/2;

###################################
#  Make an aligned list to present Q and A.
###################################

$al = new_aligned_list(ans_rule_len=>15, tex_spacing=>"3pt");
$al->qa(
  "\( h \)", Real($h)->cmp,
  "\( k \)", Real($k)->cmp,
  "\( r \)", Real($r)->cmp,
);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Find the equation of the circle whose diameter
has endpoints ($a, $b) and ($c, $d). Write it in the form
\[(x-h)^2 + (y-k)^2 = r^2\]
and identify \(h\), \(k\), and \(r\).
$PAR
\{$al->print_q\}
END_TEXT
Context()->normalStrings;

###################################
# Answer checking

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################

;
ENDDOCUMENT();
