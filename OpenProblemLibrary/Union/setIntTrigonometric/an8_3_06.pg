## KEYWORDS('Indefinite', 'Trig Integral')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$n = random(3,9,1);

$integrand=Formula(" tan^{$n}(x) sec^{2}(x)  ");

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the indefinite integral.
$PAR
\( \displaystyle\int $integrand \, dx \)
             = \{ans_rule(50)\} \( + C\).
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;
Context()->flags->set(reduceConstants=>0);

$power = $n+1;
$antideriv = Formula(  "(1/$power)(tan^{$power}(x))")
                    ->with(limits => [0,1]);

ANS($antideriv->cmp(upToConstant=>1));

###################################
Context()->texStrings;
BEGIN_SOLUTION
$PAR SOLUTION $PAR 
Let \( u = \tan x \). Then \( du = \sec^2 x \, dx \) and
\[ 
\displaystyle \int $integrand \, du =
\int u^{$n} \, du = \frac{1}{$power} u^{$power}+C  
= \frac{1}{$power} \tan ^{$power} x +C
\]
END_SOLUTION
ENDDOCUMENT();
