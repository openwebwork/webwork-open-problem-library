## DBsection(Indefinite integrals (without trigonometric functions))
## Date(8/23/07)
## Institution(Union College)
## Author(Paul Friedman)
## MLT(indefinite_polys_only)
## Level(2)
## MO(1)
## KEYWORDS('calculus','integration','indefinite integral')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,8,1);
$b = random(2,8,1);
$c = random(5,13,1);
$m = random(3,5,1);
$n = random(1,2,1);

$integrand=Formula("$a x^$m + $b x^$n+$c")->reduce;

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the indefinite integral.
$PAR
\( \displaystyle\int $integrand \, dx \) = \{ans_rule(25)\} \( + C\).
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;
$mm = $m + 1;
$nn = $n + 1;

Context()->flags->set(reduceConstants=>0);
$antideriv=Formula("$a/$mm x^$mm+$b/$nn x^$nn + $c x");

ANS($antideriv->cmp(upToConstant=>1));

###################################


;
ENDDOCUMENT();
