DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "choiceUtils.pl",        # for matching problems
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

$a0 = random(-10,-2,1);
$a1 = $a0+random(1,6,1);
$a2 = $a1+random(1,6,1);
$ml = new_match_list();
$ml->rf_print_q(~~&alt_print_q);
$ml->{separation} = 3;

###################################
# Defining matching list and choose four to ask

$ml->qa(
" \(S\cap T \)"," \(($a1,$a2]\)",
" \(S\cap W \)"," \(($a1,$a2)\)",
" \(T\cap W \)"," \([$a0,$a2)\)",
" \(S\cup T \)"," \((-\infty,\infty)\) ",
" \(S\cup W \)"," \([$a0,\infty)\)",
" \(T\cup W \)"," \((-\infty,$a2]\)"
);

$ml->choose(4);

###################################
# Main text

BEGIN_TEXT
Let \(S=($a1,\infty)\), \(T=(-\infty,$a2]\), and \(W=[$a0,$a2)\).
$BR
For each intersection or union, choose the correct notation for the resulting interval.
$PAR
\{ColumnMatchTable($ml,indent => 3)\}
END_TEXT

###################################
# Answers

ANS(str_cmp($ml->ra_correct_ans));

$showPartialCorrectAnswers = 0;

