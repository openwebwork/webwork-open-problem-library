## Level(2)
## MO(1)
## KEYWORDS('Trig')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,4,1);
$b = random($a+1,8,1);
$q = random(2,4,1);

if ($q == 2) {
	$s = 1;
	$theta = pi - arcsin($a/$b);
	$quad = 'II';
	};
if ($q == 3) {
	$s = -1;
	$theta = pi + arcsin($a/$b);
	$quad = 'III';
	};
if ($q == 4) {
	$s = -1;
	$theta = 2*pi - arcsin($a/$b);
	$quad = 'IV';
	};
if ($s == 1) {$sign = ' '};
if ($s == -1) {$sign = '-'};

###################################
#  Use an alignment to present the questions and answer rules
###################################

$ans1 = cos($theta);
$ans2 = tan($theta);
$ans3 = 1/$ans1;
$ans4 = $s*$b/$a;
$ans5 = 1/$ans2;

$al = new_aligned_list(ans_rule_len=>10, numbered=>1, tex_spacing=>"3pt");
$al->qa(
  "\(\cos(\theta)\)", Real($ans1)->cmp,
  "\(\tan(\theta)\)", Real($ans2)->cmp,
  "\(\sec(\theta)\)", Real($ans3)->cmp,
  "\(\csc(\theta)\)", Real($ans4)->cmp,
  "\(\cot(\theta)\)", Real($ans5)->cmp,
);

###################################
# Main text

BEGIN_TEXT
If \(\sin(\theta) = $sign\frac{$a}{$b}\), and \(\theta\) is in
quadrant $quad, then evaluate the following.
$PAR
\{$al->print_q\}
END_TEXT

###################################
# Answers

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################


;
ENDDOCUMENT();
