DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

Context("Interval");

$a = random(1,8,1);
$b = random(2,10,1);
$c = random(3,15,1);
$min = ($c-$b)/(-$a);
$max = ($c+$b)/($a);
$f = Formula("|$b -$a x|")->reduce;

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the following inequality. Enter the answer in interval notation.
\[ $f \geq $c  \]
Answer: \{ans_rule(35)\}
$PAR
$INFINITY_UNION_MESSAGE
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;
ANS(Union("(-INF,$min]U[$max,INF)")->cmp);

###################################

;
ENDDOCUMENT();
