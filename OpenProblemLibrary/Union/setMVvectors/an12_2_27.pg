DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");

# the vectors u, v, w
$U = non_zero_vector2D();
$V = non_zero_vector2D();
$W = non_zero_vector2D();

$a = random(2,10,1);
$b = random(2,10,1);

$X = ($a*$U-$V-$W)/($b-1);

##############################################
#  Main text

$u = Overline('u');
$v = Overline('v');
$w = Overline('w');
$x = Overline('x');

Context()->texStrings;
BEGIN_TEXT

Let \($u = $U\), \($v = $V\), and \($w = $W\).
Find the vector \($x\) that satisfies
\[$a $u - $v + $x = $b $x + $w.\]
$PAR

In this case, \($x =\) \{ans_rule(30)\}.

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($X->cmp);
$showPartialCorrectAnswers = 1;

##################################################
$A=$a*$U-$V-$W;
$a1=$A->extract(1);
$a2=$A->extract(2);
$b1=$b-1;
Context("Fraction");
$x1=Compute("$a1/$b1");
$x2=Compute("$a2/$b1");
Context()->texStrings;
if ($b1==1){
BEGIN_SOLUTION
Solving the given equation for \($x\) yields
\[ $x= $a $u - $v - $w = $a $U - $V - $W = $X \]
END_SOLUTION;
}
else
{
BEGIN_SOLUTION
Solving the given equation for \($x\) yields
\[ \begin{array}{lcl} $x&=& \frac{1}{$b1}( $a $u - $v - $w)
\\& =& \frac{1}{$b1} ($a $U - $V - $W )
\\&=& 
\frac{1}{$b1} $A
\\& =& \left \langle $x1 ,$x2 \right\rangle 
\end{array}\]
END_SOLUTION;
};


ENDDOCUMENT();
