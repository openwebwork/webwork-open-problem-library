DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector")->operators->undefine('><');

#
#  The vectors u and v
#
$U = non_zero_vector3D();
$V = non_zero_vector3D();

##############################################
#  Main text

$u = Overline('u');
$v = Overline('v');

Context()->texStrings;
BEGIN_TEXT

Suppose \($u = $U\) and \($v = $V\).  Then
$BBLOCKQUOTE
\($u \times $v\) is \{ans_rule(30)\}, and$BBR
\($v \times $u\) is \{ans_rule(30)\}.
$EBLOCKQUOTE

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(($U x $V)->cmp);
ANS(($V x $U)->cmp);
$showPartialCorrectAnswers = 1;

##################################################


COMMENT('MathObject version');
ENDDOCUMENT();
