DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "contextLimitedVector.pl",
  "parserVectorUtils.pl",
  "alignedChoice.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");

# the vectors
$U = non_zero_vector3D();
$V = non_zero_vector3D();

# some coefficients
($a,$b,$c,$d) = (random(2,8,1),random(2,8,1),random(2,8,1),random(2,8,1));
$b++ if ($a == $b);
$d++ if ($c == $d);

##############################################
#
#  Set up the context
#
$u = Overline('u');
$v = Overline('v');

Context()->constants->add(u => $U, v => $V);
Context()->constants->set(u => {TeX => $u}, v => {TeX => $v});
Context()->flags->set(reduceConstants => 0);

##############################################
#
#  Create a formula for display and an answer checker for it
#
sub QA {
  my @qa;
  foreach (@_) {
    my $f = Formula($_); push (@qa,"\(".$f->TeX."\)");
    $f = $f->eval; $f->{context} = $context{'LimitedVector-coordinate'};
    push (@qa, $f->cmp);
  }
  return @qa;
}

##############################################

$al = new_aligned_list(equals => 1, ans_rule_len => 30, tex_spacing => "3pt");
$al->qa(QA(
  "u+v",
  "u-v",
  "v-u",
  "$a u",
  "-(1/$b)v",
  "$c u - $d v"
));

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose \($u = $U\) and \($v = $V\).
Then:

$BCENTER
$PAR
\{$al->print_q\}
$ECENTER

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($al->correct_ans);
$showPartialCorrectAnswers = 1;

##################################################


COMMENT('MathObject version');
ENDDOCUMENT();
