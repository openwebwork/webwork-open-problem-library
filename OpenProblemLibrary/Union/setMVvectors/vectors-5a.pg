## DESCRIPTION
##   Make two Vectors Equal
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Geometry)
## DBchapter(Vector geometry)
## DBsection(Vectors and vector arithmetic)
## Date(8/23/07)
## Institution(Union College)
## Level(2)
## MO(1)
## KEYWORDS('Vector', 'Equal')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");
Context()->variables->are(t=>'Real');
Context()->flags->set(reduceConstants=>0);

sub parameter () {random(1,5,1)}

#
#  Some random values
#
$b = parameter;
$c = parameter;
$a = parameter + $c;

$d = $b*($a-$c);
#
#  The vectors to make equal
#
$V = Formula("<t^3 - $d t,(1/$b)t^2 + $c>")->reduce;
$W = Vector(0,$a);

#
#  the times when they are equal
#
$t1 = sqrt($d); $t2 = -sqrt($d);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
For what value(s) of \(t\) does the equality
\[\textstyle $V = $W\]
hold true?
$BR $BR
\(t\) = \{ans_rule(30)\}.
$PAR

$BSMALL
(If there are more than one value, separate them by commas.)
$ESMALL

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(List($t1,$t2)->cmp);
$showPartialCorrectAnswers = 1;

##################################################

;
ENDDOCUMENT();
