## DESCRIPTION
##   Use Substitution to Evaluate an Indefinite Integral
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Calculus - single variable)
## DBchapter(Techniques of integration)
## DBsection(Substitution (without trigonometric functions))
## Date(8/23/07)
## Institution(Union)
## Author(K. Lesh)
## MLT(Sub_direct)
## Level(2)
## MO(1)
## KEYWORDS('Indefinite', 'Integral', 'Substitution')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,8,1);
$b = random(2,4,1);
$d = random(1,15,1);

# See problem text for typesetting of dx/(${a}x+$d)^$b integrand

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the indefinite integral.
$PAR
\( \displaystyle\int \frac{dx}{($a x+$d)^$b}  \)
             = \{ans_rule(50)\} \( + C\).
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;
Context()->flags->set(reduceConstants=>0);

$power = -$b+1;
$antideriv =Formula( "1/$a * 1/$power (${a}x+$d)^$power");

ANS($antideriv->cmp(upToConstant=>1));

###################################


COMMENT('MathObject version');
ENDDOCUMENT();
