## DESCRIPTION
##   Use Substitution to Evaluate an Indefinite Integral
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Calculus - single variable)
## DBchapter(Techniques of integration)
## DBsection(Substitution (with trigonometric functions))
## Date(8/23/07)
## Institution(Union)
## Author(K. Lesh)
## MLT(sinp)
## Level(2)
## MO(1)
## KEYWORDS('Indefinite', 'Integral', 'Substitution')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

$n = random(2,9,1);
$g = random(0,1,1);

$m = $n + 1;

if ($g==0) {
	$trigdisp = "\sin^{-1} x"; $trig = "arcsin x";
	$den = "\sqrt{1-x^2}";
} else {
	$trigdisp = "\tan^{-1} x"; $trig = "arctan x";
	$den = "1+x^2";
}

$integrand=" \frac{($trigdisp)^$n} {$den}  ";

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the indefinite integral.
$PAR
\( \displaystyle\int $integrand \, dx \)
             = \{ans_rule(50)\} \( + C\).
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;
Context()->flags->set(reduceConstants=>0);

$antideriv = Formula( "(1/$m) $trig^$m");

ANS($antideriv->cmp(upToConstant=>1));

###################################


COMMENT('MathObject version');
ENDDOCUMENT();
