## DESCRIPTION
##   Use Substitution to Evaluate an Indefinite Integral
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Calculus - single variable)
## DBchapter(Integrals)
## DBsection(Indefinite integrals (with trigonometric functions))
## Date(8/23/07)
## Institution(Union)
## Author(K. Lesh)
## MLT(several)
## Level(2)
## MO(1)
## TitleText1('Calculus')
## AuthorText1('Anton')
## EditionText1('7')
## Section1('6.3')
## Problem1('01')
## KEYWORDS('Indefinite', 'Integral', 'Substitution')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,10,1);

$b = non_zero_random(-10,-2,1);
$negb = -$b;

$integranda=Formula("e^{$a x}");
$integrandb=Formula("sin($b x)");

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the indefinite integrals.
$PAR
(a) \( \displaystyle\int $integranda \, dx \)
             = \{ans_rule(50)\} \( + C\).
$PAR
(b) \( \displaystyle\int $integrandb \, dx \)
             = \{ans_rule(50)\} \( + C\).
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;
Context()->flags->set(reduceConstants=>0);

$antideriva = Formula("(1/$a)e^(${a}x)");
$antiderivb = Formula("(1/$negb)cos(${b}x)");

ANS($antideriva->cmp(upToConstant=>1));
ANS($antiderivb->cmp(upToConstant=>1));

###################################


COMMENT('MathObject version');
ENDDOCUMENT();
