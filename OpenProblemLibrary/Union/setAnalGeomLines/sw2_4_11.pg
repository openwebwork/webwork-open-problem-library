DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$x1 = non_zero_random(-6,6,1);
$y1 = non_zero_random(-6,6,1);

$graph = init_graph(-10,-10,10,10,'axes'=>[0,0],'grid'=>[20,20],'size'=>[400,400]);
$aline = FEQ("(-$y1/$x1)*x+$y1 for x in <-10,10> using weight:2");

plot_functions($graph,$aline);

###################################
#  Make an aligned list to present Q and A.
###################################

$ans1 = -$y1/$x1;
$ans2 = $y1;

$al = new_aligned_list(ans_rule_len=>15, tex_spacing=>"3pt");
$al->qa(
  "\( m  \)", Real($ans1)->cmp,
  "\( b   \)", Real($ans2)->cmp,
);

###################################
# Main text

BEGIN_TEXT
Find the equation of the line
graphed below.
Write the equation in the form \( y=mx+b\) and identify \( m\) and \( b \).
$PAR
 \{ image(insertGraph($graph),width=>400,height=>400,tex_size=>850) \} $PAR
$PAR
\{$al->print_q\}
END_TEXT

###################################
# Answers

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################


;
