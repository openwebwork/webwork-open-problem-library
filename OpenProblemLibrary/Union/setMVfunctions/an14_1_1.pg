## DESCRIPTION
##   Compute Values of Multi-Variable Functions
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Calculus - multivariable)
## DBchapter(Concepts for multivariable functions)
## DBsection(Notation, domain, and range)
## Date(8/23/07)
## Institution(Union College)
## MLT(ndr_evaluate)
## MLTleader(1)
## Level(1)
## MO(1)
## TitleText1('Calculus')
## AuthorText1('Anton')
## EditionText1('7')
## Section1('14.1')
## Problem1('1 2 3 4')
## TitleText2('Calculus: Early Transcendentals')
## AuthorText2('Rogawski')
## EditionText2('1')
## Section2('14.1')
## Problem2('1 2 3 4')
## KEYWORDS('Function', 'Multi-Variable', 'Multivariate', 'Multivariable')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector")->variables->are(
  x=>'Real', y=>'Real',
  u=>'Real', v=>'Real',
  t=>'Real',
);
$t = Formula('t'); $u = Formula('u'); $v = Formula('v');

#
#  The function
#
$c = non_zero_random(-8,8,1);
$f = Formula("xy^2+$c")->reduce;
$f->perlFunction("f");

#
#  Some points to evaluate it at
#
$a = random(-5,5,1);
$b = random(-5,5,1); $b++ if ($b == $a);
$d = random(2,6,1);
$e = random(-5,5,1); $e-- if ($e == $a);

#
#  The questions and answers
#    (for the functional ones, we include all the variables
#     so the students don't get reports of names being unknown.)
#
$al = new_aligned_list(ans_rule_len=>25);
$al->qa(
  "\(f($a,$b)\)",    Real(f($a,$b))->cmp,
  "\(f($b,$a)\)",    Real(f($b,$a))->cmp,
  "\(f(0,0)\)",      Real(f(0,0))->cmp,
  "\(f($e,$b)\)",    Real(f($e,$b))->cmp,
  "\(f(t,${d}t)\)",  f($t,$d*$t)->cmp,
  "\(f(uv,u-v)\)",   f($u*$v,$u-$v)->cmp,
);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose \(f(x,y)=$f\).  Compute the following values:
$PAR

$BBLOCKQUOTE
\{$al->print_q\}
$EBLOCKQUOTE

END_TEXT
Context()->normalStrings;

##############################################
# Answers

ANS($al->correct_ans);
$showPartialCorrectAnswers = 1;

##############################################


;
ENDDOCUMENT();
