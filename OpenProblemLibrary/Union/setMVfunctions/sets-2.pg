DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector")->variables->are(
  x=>'Real', y=>'Real', z=>'Real',
  s=>'Real', t=>'Real',
  u=>'Real', v=>'Real',
);

#
#  Functions, inputs and outputs
#
@fn = (
  '(u^2 + 5,u-v^3)',
  '(cos(t),sin(t))',
  '(x^2+y^2,x+3y^2,3y)',
  '(x^2-y^2,x+3z^2)',
  '(sin(t)cos(s),2tan(t))',
  '((cos(u)+2)cos(t),(cos(u)+2)sin(t),sin(u))',
);

#
#  Get data for a random function
#
$f = Formula($fn[random(0,$#fn,1)]);
@inputs = lex_sort(keys %{$f->{variables}});
$n = Real(scalar(@inputs)); $m = Real($f->length);
$x = join(',',@inputs);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Consider the function \(f($x) = $f\).
$PAR

Its ${BBOLD}graph${EBOLD} is in \($R^a\)
where \(a\) = \{ans_rule(5)\}.
$PAR
Its ${BBOLD}image${EBOLD} is in \($R^b\)
where \(b\) = \{ans_rule(5)\}.
$PAR
Its ${BBOLD}level sets${EBOLD} are in \($R^c\)
where \(c\) = \{ans_rule(5)\}.

END_TEXT
Context()->normalStrings;

##############################################
# Answers

ANS(($m+$n)->cmp);
ANS($m->cmp);
ANS($n->cmp);

$showPartialCorrectAnswers = 1;

##############################################


COMMENT('MathObject version');
ENDDOCUMENT();
