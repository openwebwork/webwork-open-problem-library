DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$a_numb = random(2,9,1);
$a_sign = random(-1,1,2);
$a      = $a_numb * $a_sign;

$n      = random(2,9,1);

$x0=1;

$y_den = 0;
while ($y_den == 0){
  $c_numb = random(2,9,1);
  $c_sign = random(-1,1,2);
  $c      = $c_numb * $c_sign;
  $y_den  = 1 + $a + $a*$c;
  }

$y_num = 1 + $c;

$y0 = $y_num / $y_den;

$absynum=abs($y_num);
$absyden=abs($y_den);

if($y_den*$y_num>0){
$displayy0="\frac{$absynum}{$absyden}";
     }
else{
$displayy0="-\frac{$absynum}{$absyden}";
    }

Context()->variables->add(y=>'Real');
$leftside=Formula("y/{x-$a y}")->reduce;
$rightside=Formula("x^$n + $c")->reduce;

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
For the equation given below, evaluate \( \displaystyle \frac{dy}{dx}\)
at the point \(  ($x0,$displayy0)     \).
\[$leftside = $rightside \]
\(\displaystyle\frac{dy}{dx}\) at \(($x0,$displayy0)\) = \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

$ans = ($n*(1-$a*$y0)+1+$c)/(1+$a+$a*$c);
ANS(Real($ans)->cmp);

###################################


;
