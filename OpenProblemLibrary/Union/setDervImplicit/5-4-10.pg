DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$x0 = random(-2,2,1);
$y0 = non_zero_random(-2,2,1);

$a = random(2,6,1);
$c = random(2,4,1);

$derivdenom=3*$c*$y0**2 + 2*$y0;
while ($derivdenom == 0)
{
    $y0 = non_zero_random(-2,2,1);
}

Context()->variables->add(y=>'Real');
$leftside=Formula("$c y^3 + y^2 - $a x^2")->reduce;
$rightside=Real($leftside->eval(x=>$x0, y=>$y0));

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
For the equation given below, evaluate \(\displaystyle\frac{dy}{dx}\)
at the point \(($x0,$y0)\).
\[$leftside = $rightside \]
\(\displaystyle\frac{dy}{dx}\) at \(($x0,$y0)\) = \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

$ans = 2*$a*$x0/$derivdenom;
ANS(Real($ans)->cmp);

###################################


;
ENDDOCUMENT();
