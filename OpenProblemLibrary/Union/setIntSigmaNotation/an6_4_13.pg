## DESCRIPTION
##   Find a Closed Form for a Finite Sum
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Algebra)
## DBchapter(Finite sequences and series)
## DBsection(Summation formulas)
## Date(8/23/07)
## Institution(Union)
## Author(K. Lesh)
## Level(3)
## MO(1)
## TitleText1('Calculus')
## AuthorText1('Anton')
## EditionText1('7')
## Section1('6.4')
## Problem1('13')
## KEYWORDS('Sum', 'Sigma Notation', 'Closed Form')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,6,1);
$b = random(2,4,1);
$summand="($a+$b k)^2";

###################################
# Main text

BEGIN_TEXT
Express the following sum in closed form.
$PAR
\(\displaystyle \sum\limits_{k=1}^{n} \ $summand \) = \{ans_rule(50)\}
$PAR
${BBOLD}Hint:$EBOLD Start by multiplying out \($summand\).
$PAR
${BBOLD}Note:$EBOLD Your answer should be in terms of \(n\).
END_TEXT

###################################
# Answers

$showPartialCorrectAnswers = 1;

Context()->variables->are(n=>'Real');
$c0 = $a**2;
$c1 = 2*$a*$b;
$c2 = $b**2;
$ans = "${c0}n + ${c1}n(n+1)/2 + $c2 n(n+1)(2n+1)/6 " ;
ANS(Formula($ans)->cmp);

###################################


;
ENDDOCUMENT();
