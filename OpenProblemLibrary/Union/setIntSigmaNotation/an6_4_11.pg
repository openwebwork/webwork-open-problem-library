## KEYWORDS('Sum', 'Sigma Notation', 'Closed Form')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,9,1);
$summand="$a \left( \displaystyle\frac{k}{n}\right)";

###################################
# Main text

BEGIN_TEXT
Express the following sum in closed form.
$PAR
\(\displaystyle \sum\limits_{k=1}^{n} \ $summand \) = \{ans_rule(50)\}
$PAR
${BBOLD}Note:$EBOLD Your answer should be in terms of \(n\).
END_TEXT

###################################
# Answers

$showPartialCorrectAnswers = 1;

Context()->variables->are(n=>'Real');
$ans = "$a(n+1)/2" ;
ANS(Formula($ans)->cmp);

###################################


;
ENDDOCUMENT();
