DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric")->variables->are(x=>'Real',y=>'Real');

#
#  The function
#
$a = non_zero_random(-5,5,1);
$b = non_zero_random(-5,5,1);

$f = Formula("(xy)/($a x^2 + $b y^2)")->reduce;

#
#  The derivatives
#
$fx = Formula("y($b y^2 - $a x^2) / ($a x^2 + $b y^2)^2")->reduce;
$fy = Formula("x($a x^2 - $b y^2) / ($a x^2 + $b y^2)^2")->reduce;


##############################################

$al = new_aligned_list(
  ans_rule_len => 50,
  tex_spacing => "3pt",
  row_spacing => 3,
);

$al->qa(
  "\($DISPLAY\frac{\partial z}{\partial x}\)", $fx->cmp,
  "\($DISPLAY\frac{\partial z}{\partial y}\)", $fy->cmp,
);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Let \(z = $DISPLAY $f\).  Then:
$PAR
\{$al->print_q\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($al->correct_ans);
$showPartialCorrectAnswers = 1;

##################################################


COMMENT('MathObject version');
ENDDOCUMENT();
