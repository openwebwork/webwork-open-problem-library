DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");

#
#  The function
#
$a = non_zero_random(-5,5,1);
$n = random(5,9,1);

$f = Formula("($a x - y)^$n")->reduce;

#
#  The derivatives
#
$fxy = Formula("-($a)*$n*($n-1) ($a x - y)^($n-2)")->reduce;
$fxyx = Formula("-($a)^2*$n*($n-1)*($n-2) ($a x - y)^($n-3)")->reduce;

##############################################

$al = new_aligned_list(
  ans_rule_len => 30,
  tex_spacing => "3pt",
  row_spacing => 5,
);

sub D {
  my $s = '$DISPLAY\frac{\partial^'.scalar(@_).'\!f}{';
  foreach my $x (@_) {$s .= '\partial '.$x unless $x eq ''}
  $s .= '}';
  return $s;
}

$al->qa(
  "\(".D('x','y')."\)",       $fxy->cmp,
  "\(".D('x','y','x')."\)",   $fxyx->cmp,
  "\(".D('x^2','y','')."\)",  $fxyx->cmp,
);

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Let \(f(x,y) = $f\).  Then
$PAR

\{$al->print_q\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($al->correct_ans);
$showPartialCorrectAnswers = 1;

##################################################


COMMENT('MathObject version');
ENDDOCUMENT();
