DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric")->variables->are(x=>'Real',y=>'Real');

#
#  The function
#
$a = random(1,5,1);
$b = random(1,5,1);

$f = Formula("sqrt($a x + $b y)")->reduce;

#
#  The point
#
($x,$y) = (random(1,5,1),random(1,5,1));

#
#  The derivatives
#
#$fx = $a/(2*sqrt($a*$x+$b*$y));
#$fy = $b/(2*sqrt($a*$x+$b*$y));

$fx = $f->D('x')->eval(x=>$x,y=>$y);
$fy = $f->D('y')->eval(x=>$x,y=>$y);


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Let \(z = $f\).  Then:
$PAR

The rate of change in \(z\) at \(($x,$y)\) as we change \(x\)
but hold \(y\) fixed is \{ans_rule(15)\}, and
$PAR

The rate of change in \(z\) at \(($x,$y)\) as we change \(y\)
but hold \(x\) fixed is \{ans_rule(15)\}.

END_TEXT
Context()->texStrings;

##################################################
#  Answers

ANS($fx->cmp);
ANS($fy->cmp);

$showPartialCorrectAnswers = 1;

##################################################


;
ENDDOCUMENT();
