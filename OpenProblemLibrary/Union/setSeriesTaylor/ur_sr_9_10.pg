## DESCRIPTION
##   Find Coefficients for a Maclaurin Series
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Calculus - single variable)
## DBchapter(Infinite sequences and series)
## DBsection(Representations of functions as series)
## Date(8/23/07)
## Institution(Rochester)
## Author(K. Lesh)
## MLT(multxpower)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('1')
## Section1('10.7')
## Problem1('7')
## KEYWORDS('Series', 'Maclaurin', 'Coefficient')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "alignedChoice.pl",      # for aligned answer blanks
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,10,1);
$b = random(2,10,1);
$f=Formula("$a x^2  sin($b x)")->reduce;

###################################
#  Make an aligned list to present Q and A.
###################################

$c3 =  ($a * $b) ;
$c4 =  0;
$c5 =  -($a * $b**3 ) / 6 ;
$c6=   0;
$c7=   ($a * ($b**5)) / 120 ;

$al = new_aligned_list(ans_rule_len=>15, tex_spacing=>"3pt");
$al->qa(
  "\(c_3\)", Real($c3)->cmp,
  "\(c_4\)", Real($c4)->cmp,
  "\(c_5\)", Real($c5)->cmp,
  "\(c_6\)", Real($c6)->cmp,
  "\(c_7\)", Real($c7)->cmp,
);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Write the Maclaurin series for
\(f(x) = $f\) as
\( \displaystyle \sum_{n=0}^\infty c_n x^n. \)
$BR
Find the following coefficients.
$PAR
\{$al->print_q\}
END_TEXT
Context()->normalStrings;

###################################
# Answer checking

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################


COMMENT('MathObject version');
ENDDOCUMENT();
