## DESCRIPTION
##   Find Coefficients of a Maclaurin Series
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Calculus - single variable)
## DBchapter(Infinite sequences and series)
## DBsection(Representations of functions as series)
## Date(8/23/07)
## Institution(Rochester)
## Author(K. Lesh)
## MLT(multxpower)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('1')
## Section1('10.7')
## Problem1('13')
## KEYWORDS('Series', 'Coefficient', 'Maclaurin')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,10,1);
$b = random(2,10,1);
$f=Formula("$a x^2 * exp(-$b x)")->reduce;
$displayf = "$a x^2  e^{-$b x}";

###################################
#  Make an aligned list to present Q and A.
###################################

$c0 =  0;
$c1 =  0;
$c2 =  $a ;
$c3 =  -($a * $b) ;
$c4 =  ($a * $b * $b) / 2 ;
$c5 =  -($a * ($b ** 3)) / 6 ;

$al = new_aligned_list(ans_rule_len=>15, tex_spacing=>"3pt");
$al->qa(
  "\(c_0\)", Real($c0)->cmp,
  "\(c_1\)", Real($c1)->cmp,
  "\(c_2\)", Real($c2)->cmp,
  "\(c_3\)", Real($c3)->cmp,
  "\(c_4\)", Real($c4)->cmp,
  "\(c_5\)", Real($c5)->cmp,
);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Write the Maclaurin series for
\(f(x) = $displayf \) as
\( \displaystyle \sum_{n=0}^\infty c_n x^n. \)
$BR
Find the first six coefficients.
$PAR
\{$al->print_q\}
END_TEXT
Context()->normalStrings;

###################################
# Answer checking

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################


;
ENDDOCUMENT();
