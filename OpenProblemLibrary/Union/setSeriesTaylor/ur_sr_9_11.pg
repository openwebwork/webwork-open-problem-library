DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,10,1);
$b = random(2,10,1);
$f=Formula("$a cos($b x^2)")->reduce;

###################################
#  Make an aligned list to present Q and A.
###################################

$c0 =  $a ;
$c2 =  0;
$c4 =   -($a * $b * $b) / 2 ;
$c6=   0;
$c8=   ($a * ($b ** 4)) / 24 ;

$al = new_aligned_list(ans_rule_len=>15, tex_spacing=>"3pt");
$al->qa(
  "\(c_0\)", Real($c0)->cmp,
  "\(c_2\)", Real($c2)->cmp,
  "\(c_4\)", Real($c4)->cmp,
  "\(c_6\)", Real($c6)->cmp,
  "\(c_8\)", Real($c8)->cmp,
);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Write the Maclaurin series for
\(f(x) = $f\) as
\( \displaystyle \sum_{n=0}^\infty c_n x^n. \)
$BR
Find the following coefficients.
$PAR
\{$al->print_q\}
END_TEXT
Context()->normalStrings;

###################################
# Answer checking

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################


;
ENDDOCUMENT();
