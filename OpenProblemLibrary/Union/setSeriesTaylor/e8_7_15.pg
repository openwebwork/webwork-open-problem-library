DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$b = random(2,15,1) ;

$f=Formula("{cos x -1 + x^2 / 2} / {$b x^4}  ")->reduce;

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate
\[ \lim_{x \to 0} $f .\]
$PAR
Limit = \{ans_rule(30)\}
$PAR
${BBOLD}Hint:$EBOLD Use the power series expansion of \(\cos(x)\).
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;
$ans = 1/($b*24) ;
ANS(Real($ans)->cmp);

###################################


;
