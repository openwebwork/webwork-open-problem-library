DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "alignedChoice.pl",      # for aligned answer blanks
  "contextPiecewiseFunction.pl", # for piecewise defined functions
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

Context("PiecewiseFunction");

$a = random(-10,-2,1);
$b = random(0,8,1);
$c = random(1,8,1);

$f = Formula("x^2+2x if x <= -1 else x+$c if x > -1");

###################################
# Setting up an aligned list of the problems

$al = new_aligned_list(ans_rule_len=>15, numbered=>1, tex_spacing=>"3pt");
$al->qa(
  "\(f($a)\)", $f->eval(x=>$a)->cmp,
  "\(f(-1)\)", $f->eval(x=>-1)->cmp,
  "\(f($b)\)", $f->eval(x=>$b)->cmp,
);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Let \[f(x) = \{$f->with(final_period=>1)\}\]
Evaluate the following:
$PAR
\{$al->print_q\}
END_TEXT
Context()->normalStrings;

###################################
# Answer checking

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################

COMMENT('MathObject version');
ENDDOCUMENT();
