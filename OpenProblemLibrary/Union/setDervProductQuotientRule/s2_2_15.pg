DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

Context("Numeric");
Context()->variables->set(x=>{limits=>[0.25,5]});

$a = random(2,7,1);
$b = random(2,8,1);
$c = random(2,7,1);

$point = random(1,5,1);

$f=Formula("{ $a x^2 + $b x + $c } /{sqrt{x} }");

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Let \( f(x) = \displaystyle $f \).  Find \(f'(x)\).
$BR$BR
\(f'(x) =\) \{ans_rule(50) \}
$BR $BR
Find \( f'( $point ) \).
$BR
\( f'( $point ) = \)\{ans_rule(50) \}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

$fprime=$f->D('x');
$fprimeatpoint=Real($fprime->eval(x=>$point));

ANS($fprime->cmp);
ANS($fprimeatpoint->cmp);

###################################

;
ENDDOCUMENT();
