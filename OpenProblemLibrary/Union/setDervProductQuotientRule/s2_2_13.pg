DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

Context('Numeric');
$a = random(2,7,1);
$b = random(2,8,1);
$c = random(2,7,1);
$d = random(2,6,1);

$point= random(1,5,1);

Context()->variables->are(t=>'Real');
$f=Formula("(t^2 + $a t +$b)($c t^2 +$d)");

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Let \( f(t) = \displaystyle $f \).  Find \(f'(t)\).
$PAR
\(f'(t) =\) \{ans_rule(50) \}
$PAR
Find \( f'( $point ) \).
$PAR
\( f'( $point ) = \)\{ans_rule(50) \}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

$fprime=$f->D('t');
$fprimeatpoint=Real($fprime->eval(t=>$point));

ANS($fprime->cmp);
ANS($fprimeatpoint->cmp);

###################################

;
ENDDOCUMENT();
