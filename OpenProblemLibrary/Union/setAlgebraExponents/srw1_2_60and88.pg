DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2,5,1);
$b = random(2,5,1);
$c = random(2,5,1);
$d = random(2,5,1);
$e = random(2,5,1);
$f = random(2,5,1);
$g = random(2,5,1);
$h = random(2,5,1);
$ii = random(-4,-2,1);

$aa = random(2,5,1);
$bb = random(2,5,1);
$cc = random(2,5,1);
$dd = random(2,5,1);
$ee = random(2,5,1);

###################################
#  Make an aligned list to present Q and A.
###################################

$partaans1 = $aa/2+$cc/3+$ee/5;
$partaans2 = $bb/2+$dd/3;

$partbans1 = $ii*($a-$d-$e);
$partbans2 = $ii*($b-$f-$h);
$partbans3 = $ii*($c-$g);

$alparta = new_aligned_list(ans_rule_len=>15, tex_spacing=>"3pt");
$alparta->qa(
  "\(r\)", Real($partaans1)->cmp,
  "\(s\)", Real($partaans2)->cmp,
);

$alpartb = new_aligned_list(ans_rule_len=>15, tex_spacing=>"3pt");
$alpartb->qa(
  "\(r\)", Real($partbans1)->cmp,
  "\(s\)", Real($partbans2)->cmp,
  "\(t\)", Real($partbans3)->cmp,
);

###################################
# Main text

BEGIN_TEXT
(a) Simplify the expression
                             \(\sqrt{x^$aa y^$bb}
                             \root 3 \of {x^$cc y^$dd}
                             \root 5 \of {x^$ee}\)
into the form \(x^r y^s \) and identify \(r \) and \(s\).
$PAR
\{$alparta->print_q\}

$PAR
(b) Simplify the expression
\(\left( \displaystyle
\frac{x^$a y^$b z^$c x^{-$d}}{x^$e y^$f z^$g y^$h}\right)^{$ii}\)
into the form \(x^r y^s z^t\) and identify \(r, s\) and \(t\).
$PAR
\{$alpartb->print_q\}
END_TEXT

###################################
# Answer checking

$showPartialCorrectAnswers = 1;
ANS($alparta->correct_ans);
ANS($alpartb->correct_ans);


;
ENDDOCUMENT();
