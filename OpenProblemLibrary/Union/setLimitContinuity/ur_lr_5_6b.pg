DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "contextPiecewiseFunction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

Context("PiecewiseFunction")->variables->add(m=>'Real');

$a = random(2,10,1);
$b = random(1,8,1);
$x = random(2,10,1);
$y = $b+$x;

$f = PiecewiseFunction(
  "mx-$y if x < -$x else
   x^2+${a}x-$b if x >= -$x"
);

Context("Numeric");

###################################
# Main text

BEGIN_TEXT
Find the value of the constant \(m\) that makes the following
function continuous on \((-\infty,\infty)\).
\[ f(x) = \{$f->TeX\} \]
$PAR
\(m=\) \{ans_rule(25) \}
$PAR
Now draw a graph of \(f\).
END_TEXT

###################################
# Answers

$showPartialCorrectAnswers = 1;
$ans = -$x+$a-1;
ANS(Real($ans)->cmp);

###################################


;
ENDDOCUMENT();
