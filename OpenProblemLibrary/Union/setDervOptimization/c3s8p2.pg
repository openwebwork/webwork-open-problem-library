DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

$a=random(1,12,1);

$f=Formula("$a-x^2")->reduce;

$x=sqrt($a/3);
$y= $f->eval(x=>$x);
$two_x = 2*$x;

###################################
#  Make an aligned list to present Q and A.
###################################

$a1 = new_aligned_list(ans_rule_len=>20, numbered=>1, tex_spacing=>"3pt", align => LEFT);
$a1->qa(
  "Width", Real($two_x)->cmp,
  "Height", Real($y)->cmp,
);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
A rectangle has its two lower corners on the \(x\)-axis and its two
upper corners on the parabola
\( y= $f\).
$PAR
What are the dimensions of such a rectangle with the greatest
possible area?
$PAR
\{$a1->print_q\}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($a1->correct_ans);

###################################


;
ENDDOCUMENT();
