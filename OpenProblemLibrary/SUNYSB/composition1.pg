TEXT(beginproblem());

$showPartialCorrectAnswers = 0;

$a = random(1,10);
$b = random(2,8);
$c = random(12,20);

sub fog { 
    my $x = shift;

    $y = ($x-2)**2 + $b;

    return $y;
}

sub gof { 
    my $x = shift;

    $y = ($x-2+$b)**2;

    return $y;
}

$tf = new_select_list();
$tf -> qa(
"A=R, B= R, C=R, D=R", "T",
"B=D", "F",
"A=C", "F",
"A=D", "T",
"\(D \subseteq B\)","F",
"\(B \subseteq D\)","F",
"\(A \subseteq C\)","F",
"\(C \subseteq A\)","F",
"B=C","F"
);

#9
$tf -> choose(5);

BEGIN_TEXT
    Let 
    \(f:A\longrightarrow B\) 
and
    \(g:C\longrightarrow D\).
    For each of the following functions, state whether or not you can compute \(f \circ g\) (using the only constraint that is given). (You must enter T or F -- True and False will not work.)

END_TEXT

BEGIN_TEXT
    $PAR
    \{ $tf->print_q() \}
END_TEXT
ANS(str_cmp($tf->ra_correct_ans));

$foga = fog($a);
$fogc = fog($c);
$gofa = gof($a);
$gofc = gof($c);

$tff = new_select_list();
$tff -> qa("\(f \circ g ($a) \)", "$foga",
"\(f \circ g ($c) \)", "$fogc",
"\(g \circ f ($a) \)", "$gofa",
"\(g \circ f ($c) \)", "$gofc");

$tff -> choose(4);

BEGIN_TEXT
    Let 
    \(f:R\longrightarrow R, f(x)=x+$b\) 
and
    \(g:R\longrightarrow R, g(x) = (x-2)^2\).
    Compute the following expressions.
    $PAR
    \{ $tff->print_q() \}
END_TEXT

ANS(str_cmp($tff->ra_correct_ans));


