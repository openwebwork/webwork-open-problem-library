@powersOfTwo=(1,2,4,8,16,32,64,128,256,512);
@powersOfTen=(1,10,100,1000,10000,100000,1000000,10000000,100000000,1000000000);

sub toBinary {
    my $i = shift;
    my $answer = 0;
    for ($d=9; $d>=0; $d--)
    {
	if ($i>=$powersOfTwo[$d])
	{
	    $i = $i - $powersOfTwo[$d];
	    $answer = $answer + $powersOfTen[$d];
	}
    }
    return $answer;
}

