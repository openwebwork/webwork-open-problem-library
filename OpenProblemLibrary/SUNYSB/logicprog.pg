# Make a new multiple choice
$hnot = new_multiple_choice();

$ hnot -> qa ('How to represent \( \neg p \) in a logic program?', '\( \leftarrow p\) ');

# Extra answers
$hnot ->extra('\( \rightarrow p \)',
             '\( p \leftarrow \)',
             'impossible',
             '\(p \)'
);

BEGIN_TEXT
