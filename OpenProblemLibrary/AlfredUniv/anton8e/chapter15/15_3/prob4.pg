DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "PGgraphmacros.pl",
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
);

#TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Numeric")->variables->are(
  x=>'Real',y=>'Real',theta=>'Real'
);
Context()->variables->set(theta => {TeX => '\theta',limits=>[0.001,3]});

#
#  The function to plot
#
$x0 = random(1,5);
$m = random(1,5);
$f = Formula("$m*x")->reduce;
$y0 = $f->substitute(x=>$x0);
$top = Formula("$y0");
$theta = Compute("arctan($y0/$x0)");
$line = Formula("$y0/sin(theta)");
#
#  Ranges for the graphs
#


#
#  Graph size
#
($xm,$xM) = (-1,$x0+1);
($ym,$yM) = (-1,$y0+1);
$size = [250,250];
$tex_size = 350;

##############################################

#
#  The plot defaults
#
@Goptions = (
  $xm,$ym,$xM,$yM,                            # dimensions of graph
  axes => [0,0], grid => [$xM-$xm,$yM-$ym],   # number of grid lines
  size => $size                               # pixel dimension
);
@imageoptions = (size=>$size, tex_size=>$tex_size, border=>0);

$plotoptions1 = "using color:black and weight=2";

#
#  Make the traces
#

$G = init_graph(@Goptions);

plot_functions($G,
  "$top for x in <0,$x0> $plotoptions1",
  "$f for x in <0,$x0> $plotoptions1",
);
$Trace = Image($G,@imageoptions);

Context()->texStrings;
#
#  Make the table of images
#

$Images = 
  BeginTable(spacing=>3).
    AlignedRow([$Trace]).
    AlignedRow(["R"]).
  EndTable();


##############################################
#  Main text

BEGIN_TEXT
$Images
$PAR
The region R is bounded by the y-axis and the two lines in the graph. Then
$BR
and \(\int\int_Rf(x,y)dA=\int_c^d\int_{p(\theta)}^{q(\theta)}f(r,\theta)rdrd\theta\)
$BR
\(c = \)\{&ans_rule(30)\}
$BR
\(d = \)\{&ans_rule(30)\}
$BR
\(p(\theta) = \) \{&ans_rule(30)\}
$BR
\(q(\theta) = \) \{&ans_rule(30)\}
$PAR 

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($theta->cmp);
ANS(Compute("pi/2")->cmp);
ANS(Compute("0")->cmp);
ANS($line->cmp);

$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
