DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "PGgraphmacros.pl",
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
);

#TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Numeric")->variables->are(
  x=>'Real',y=>'Real',r=>'Real',theta=>'Real'
);

#
#  The function to plot
#
$r = random(2,5);
$R = $r+random(2,5);
$rtop = Formula("sqrt($r^2-x^2)")->reduce;
$rbottom = Formula("-sqrt($r^2-x^2)")->reduce;
$Rtop = Formula("sqrt($R^2-x^2)")->reduce;
$Rbottom = Formula("-sqrt($R^2-x^2)")->reduce;
#
#  Ranges for the graphs
#


#
#  Graph size
#
($xm,$xM) = (-$R-1,$R+1);
($ym,$yM) = (-$R-1,$R+1);
$size = [250,250];
$tex_size = 350;

##############################################

#
#  The plot defaults
#
@Goptions = (
  $xm,$ym,$xM,$yM,                            # dimensions of graph
  axes => [0,0], grid => [$xM-$xm,$yM-$ym],   # number of grid lines
  size => $size                               # pixel dimension
);
@imageoptions = (size=>$size, tex_size=>$tex_size, border=>0);

$plotoptions = "using color:red and weight=2";

#
#  Make the traces
#

$G = init_graph(@Goptions);

$xfunc = sub { my $t = shift();
    return $r*cos($t); };
$yfunc = sub { my $t = shift();
    return $r*sin($t); };
$fn = new Fun( $xfunc, $yfunc, $G );
$fn->domain(0,6.2832);

$xfunc2 = sub { my $t = shift();
    return $R*cos($t); };
$yfunc2 = sub { my $t = shift();
    return $R*sin($t); };
$fn2 = new Fun( $xfunc2, $yfunc2, $G );
$fn2->domain(0,6.2832);

$Trace = Image($G,@imageoptions);


#
#  Make the table of images
#

$Images = 
  BeginTable(spacing=>3).
    AlignedRow([$Trace]).
    AlignedRow(["R"]).
  EndTable();


##############################################
#  Main text
Context()->texStrings;
BEGIN_TEXT
$Images
$PAR 
The region R is the annulus bounded by the two circles in the graph. Then
$BR
and \(\int\int_Rf(x,y)dA=\int_c^d\int_{p(r)}^{q(r)}f(r,\theta)rdrd\theta\)
$BR
\(c = \)\{&ans_rule(30)\}
$BR
\(d = \)\{&ans_rule(30)\}
$BR
\(p(r) = \) \{&ans_rule(30)\}
$BR
\(q(r) = \) \{&ans_rule(30)\}
END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(Compute("0")->cmp);
ANS(Compute("2*pi")->cmp);
ANS(Compute("$r")->cmp);
ANS(Compute("$R")->cmp);


$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
