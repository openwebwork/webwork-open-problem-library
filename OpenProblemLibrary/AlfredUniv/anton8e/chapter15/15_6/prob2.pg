DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "PGgraphmacros.pl",
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
);

## Show partial correct answers
$showPartialCorrectAnswers = 1;

BEGIN_PROBLEM();

##############################################
#  Setup

Context("Numeric")->variables->are(
  x=>'Real',y=>'Real'
);

#
#  The function to plot
#
$m = random(1,5);
$b = random(4,10);
$lower = Formula("$m*x")->reduce;
$upper = Formula("$b-x^2")->reduce;
$delta = Formula("x*y")->reduce;

$intersection = Compute("(-$m+sqrt($m^2+4*$b))/2");
$i = $intersection; # for the lazy typist
$mass = Compute("$i^6/12+(-$b-$m^2/2)*$i^4/4+$b^2*$i^2/4");
$xcenter = Compute("$i^7/14+(-$b-$m^2/2)*$i^5/5+$b^2*$i^3/6");
$ycenter = Compute("-$i^8/24+$b*$i^6/6-$m^3*$i^5/15-$b^2*$i^4/4+$b^3*$i^2/6");

$xcentroid = Compute("$xcenter/$mass");
$ycentroid = Compute("$ycenter/$mass");
#
#  Ranges for the graphs
#


#
#  Graph size
#
($xm,$xM) = (-1,$b**(1/2));
($ym,$yM) = (-1,$b+1);
$size = [200,250];
$tex_size = 350;

##############################################

#
#  The plot defaults
#
@Goptions = (
  $xm,$ym,$xM,$yM,                            # dimensions of graph
  axes => [0,0], grid => [$xM-$xm,$yM-$ym],   # number of grid lines
  size => $size                               # pixel dimension
);
@imageoptions = (size=>$size, tex_size=>$tex_size, border=>0);

$plotoptions = "using color:red and weight=2";

#
#  Make the traces
#

$G = init_graph(@Goptions);

plot_functions($G,
  "$lower for x in <$xm,$xM> $plotoptions",
  "$upper for x in <$xm,$xM> $plotoptions",
);
$Trace = Image($G,@imageoptions);

Context()->texStrings;
#
#  Make the table of images
#

$Images = 
  BeginTable(spacing=>3).
    AlignedRow([$Trace]).
    AlignedRow(["R"]).
  EndTable();


##############################################
#  Main text

BEGIN_TEXT
$Images
$PAR
The region R is bounded by \($lower,$upper\) and the y-axis, and has density \(\delta (x,y) = $delta\). To find the center of gravity of the region you would compute 
\(\int\int_R\delta(x,y) dA= \int_c^d\int_{p(x)}^{q(x)}\delta(x,y) dydx,\int_c^d\int_{p(x)}^{q(x)}x\delta(x,y) dydx,\) and 
\(\int_c^d\int_{p(x)}^{q(x)}y\delta(x,y)dydx\) where
$BR
\(c = \)\{&ans_rule(30)\}
$BR
\(d = \)\{&ans_rule(30)\}
$BR
\(p(x) = \) \{&ans_rule(30)\}
$BR
\(q(x) = \) \{&ans_rule(30)\}
$BR
\(\int_c^d\int_{p(x)}^{q(x)}dydx = \) \{&ans_rule(30)\}
$BR
\(\int_c^d\int_{p(x)}^{q(x)}xdydx = \) \{&ans_rule(30)\}
$BR
\(\int_c^d\int_{p(x)}^{q(x)}ydydx = \) \{&ans_rule(30)\}
$BR 
and finally the center of gravity is 
$BR
\(\overline {x} = \) \{&ans_rule(30)\}
$BR
\(\overline {y} = \) \{&ans_rule(30)\}
$PAR 

$BR

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(num_cmp(0));
ANS($intersection->cmp);
ANS($lower->cmp);
ANS($upper->cmp);
ANS($mass->cmp);
ANS($xcenter->cmp);
ANS($ycenter->cmp);
ANS($xcentroid->cmp);
ANS($ycentroid->cmp);

$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
