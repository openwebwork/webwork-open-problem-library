DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "PGgraphmacros.pl",
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
);

#TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Numeric")->variables->are(
  x=>'Real',y=>'Real'
);

#
#  The function to plot
#
$m = random(2,4);
$x0 = random(2,5);
$f = Formula("$m*x")->reduce;
$finv = Formula("y/$m")->reduce;
$y0 = $f->eval(x=>$x0);
$g = Formula("$y0");
$xaxis = Formula("0");

#
#  Ranges for the graphs
#


#
#  Graph size
#
($xm,$xM) = (-1,$x0);
($ym,$yM) = (-1,$y0+1);
$size = [200,250];
$tex_size = 350;

##############################################

#
#  The plot defaults
#
@Goptions = (
  $xm,$ym,$xM,$yM,                            # dimensions of graph
  axes => [0,0], grid => [$xM-$xm,$yM-$ym],   # number of grid lines
  size => $size                               # pixel dimension
);
@imageoptions = (size=>$size, tex_size=>$tex_size, border=>0);

$plotoptions = "using color:black and weight=1";

#
#  Make the traces
#

$G = init_graph(@Goptions);

plot_functions($G,
  "$f for x in <0,$x0> $plotoptions",
  "$g for x in <0,$x0> $plotoptions",
);
$Trace = Image($G,@imageoptions);

Context()->texStrings;
#
#  Make the table of images
#

$Images = 
  BeginTable(spacing=>3).
    AlignedRow([$Trace]).
    AlignedRow(["R"]).
  EndTable();


##############################################
#  Main text

BEGIN_TEXT
$Images
$PAR
The region R is bounded by the yaxis and the two lines. Then
$BR
and \(\int\int_Rf(x,y)dA=\int_c^d\int_{p(x)}^{q(x)}f(x,y)dydx\)
$BR
\(c = \)\{&ans_rule(30)\}
$BR
\(d = \)\{&ans_rule(30)\}
$BR
\(p(x) = \) \{&ans_rule(30)\}
$BR
\(q(x) = \) \{&ans_rule(30)\}
$PAR 
and \(\int\int_Rf(x,y)dA=\int_a^b\int_{g(y)}^{h(y)}f(x,y)dxdy\) where
$BR
\(a = \)\{&ans_rule(30)\}
$BR
\(b = \)\{&ans_rule(30)\}
$BR
\(g(y) = \) \{&ans_rule(30)\}
$BR
\(h(y) = \) \{&ans_rule(30)\}
$BR
Note: $y0 is the top of the triangle.
END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(num_cmp(0));
ANS(num_cmp($x0));
ANS($f->cmp);
ANS($g->cmp);

ANS(num_cmp(0));
ANS(num_cmp($y0));
ANS(num_cmp(0));
ANS($finv->cmp);


$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
