DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "PGgraphmacros.pl",
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
);

#TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Numeric")->variables->are(
  x=>'Real',y=>'Real'
);

#
#  The function to plot
#
$n  = random(2,8);

$bottom = Formula("x^$n")->reduce;
$top = Formula("x^(1/$n)")->reduce;
$bottominv = $top->substitute(x=>"y");
$topinv = $bottom->substitute(x=>"y");

#
#  Ranges for the graphs
#


#
#  Graph size
#

($xm,$xM) = (-1,2);
($ym,$yM) = (-1,2);
$size = [200,250];
$tex_size = 350;

##############################################

#
#  The plot defaults
#
@Goptions = (
  $xm,$ym,$xM,$yM,                            # dimensions of graph
  axes => [0,0], grid => [6,6],   # number of grid lines
  size => $size                               # pixel dimension
);
@imageoptions = (size=>$size, tex_size=>$tex_size, border=>0);

$plotoptions = "using color:red and weight=2";
#
#  Make the traces
#

$G = init_graph(@Goptions);

plot_functions($G,
  "$bottom for x in <0,1> $plotoptions",
  "$top for x in <0,1> $plotoptions",
);
$Trace = Image($G,@imageoptions);


#
#  Make the table of images
#

$Images = 
  BeginTable(spacing=>3).
    AlignedRow([$Trace]).
    AlignedRow(["R"]).
  EndTable();


##############################################
#  Main text
Context()->texStrings;
BEGIN_TEXT
$Images
$PAR
The region R is bounded by \(x^{$n}\) and \(x^{\frac{1}{$n}}\). Then \(\int\int_Rf(x,y)dA=\int_{c}^{d}\int_{p(x)}^{q(x)}f(x,y)dydx\)
$BR
\(c = \) \{&ans_rule(30)\}
$BR
\(d = \) \{&ans_rule(30)\}
$BR
\(p(x) = \) \{&ans_rule(30)\}
$BR
\(q(x) = \) \{&ans_rule(30)\}
$BR
and \(\int\int_Rf(x,y)dA=\int_a^b\int_{g(y)}^{h(y)}f(x,y)dxdy\) where
$BR
\(a = \) \{&ans_rule(30)\}
$BR
\(b = \) \{&ans_rule(30)\}
$BR
\(g(y) = \) \{&ans_rule(30)\}
$BR
\(h(y) = \) \{&ans_rule(30)\}
END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(num_cmp(0));
ANS(num_cmp(1));
ANS($bottom->cmp);
ANS($top->cmp);

ANS(num_cmp(0));
ANS(num_cmp(1));
ANS($topinv->cmp);
ANS($bottominv->cmp);

$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
