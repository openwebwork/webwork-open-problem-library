$BR
\(h(y) = \) \{&ans_rule(30)\}
END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(num_cmp($x0));
ANS(num_cmp($x1));
ANS(num_cmp($y0));
ANS($left->cmp);

ANS(num_cmp($x1));
ANS(num_cmp($x2));
ANS(num_cmp($y0));
ANS(num_cmp($y1));

ANS(num_cmp($x2));
ANS(num_cmp($x3));
ANS($right->cmp);
ANS(Formula("$y1")->cmp);

ANS(num_cmp($y0));
ANS(num_cmp($y1));
ANS($leftinv->cmp);
ANS($rightinv->cmp);


$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
