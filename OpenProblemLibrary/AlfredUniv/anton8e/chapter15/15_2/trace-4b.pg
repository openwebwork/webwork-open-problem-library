DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "PGgraphmacros.pl",
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
);

#TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Numeric")->variables->are(
  x=>'Real',y=>'Real'
);

#
#  The function to plot
#
$m = random(-1,-5);
$a = random(2,5);
$b = -$a*$m;
$f = Formula("$m*x+$b")->reduce;
$zero = Formula("0")->reduce;
$finv = Formula("(y-$b)/$m");
#
#  Ranges for the graphs
#


#
#  Graph size
#
($xm,$xM) = (-1,$a+1);
($ym,$yM) = (-1,$b+1);
$size = [200,250];
$tex_size = 350;

##############################################

#
#  The plot defaults
#
@Goptions = (
  $xm,$ym,$xM,$yM,                            # dimensions of graph
  axes => [0,0], grid => [$xM-$xm,$yM-$ym],   # number of grid lines
  size => $size                               # pixel dimension
);
@imageoptions = (size=>$size, tex_size=>$tex_size, border=>0);

$plotoptions1 = "using color:red and weight=2";
$plotoptions2 = "using color:blue and weight=2";
#
#  Make the traces
#

$G = init_graph(@Goptions);

plot_functions($G,
  "$f for x in <$xm,$xM> $plotoptions1",
  "$zero for x in <$xm,$xM> $plotoptions2",
);
$Trace = Image($G,@imageoptions);

Context()->texStrings;
#
#  Make the table of images
#

$Images = 
  BeginTable(spacing=>3).
    AlignedRow([$Trace]).
    AlignedRow(["R"]).
  EndTable();


##############################################
#  Main text

BEGIN_TEXT
$Images
$PAR
The region R is bounded by the x-axis, yaxis, and the line in the graph. Then
$BR
and \(\int\int_Rf(x,y)dA=\int_c^d\int_{p(x)}^{q(x)}f(x,y)dydx\)
$BR
\(c = \)\{&ans_rule(30)\}
$BR
\(d = \)\{&ans_rule(30)\}
$BR
\(p(x) = \) \{&ans_rule(30)\}
$BR
\(q(x) = \) \{&ans_rule(30)\}
$PAR 
and \(\int\int_Rf(x,y)dA=\int_a^b\int_{g(y)}^{h(y)}f(x,y)dxdy\) where
$BR
\(a = \)\{&ans_rule(30)\}
$BR
\(b = \)\{&ans_rule(30)\}
$BR
\(g(y) = \) \{&ans_rule(30)\}
$BR
\(h(y) = \) \{&ans_rule(30)\}
END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(num_cmp(0));
ANS(num_cmp($a));
ANS(num_cmp(0));
ANS($f->cmp);

ANS(num_cmp(0));
ANS(num_cmp($b));
ANS(num_cmp(0));
ANS($finv->cmp);


$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
