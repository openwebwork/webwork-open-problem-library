END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS(num_cmp($x0));
ANS(num_cmp($x1));
ANS($fleft->cmp);
ANS(num_cmp($top));

ANS(num_cmp($x1));
ANS(num_cmp($x2));
ANS(num_cmp($bottom));
ANS(num_cmp($top));

ANS(num_cmp($x2));
ANS(num_cmp($x3));
ANS($fright->cmp);
