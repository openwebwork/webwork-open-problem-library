#
# Some useful subroutines
#

sub max {
    my($max_so_far) = shift @_;
    foreach (@_){
     if($_ > $max_so_far){
       $max_so_far = $_;
     }
    }
    $max_so_far;
}

sub min {
    my($min_so_far) = shift @_;
    foreach (@_){
     if($_ > $min_so_far){
       $min_so_far = $_;
     }
    }
    $min_so_far;
}
# Catch user inputted values in $inputs_ref
sub get_value{
my($name,$default)=@_;
if (defined $inputs_ref->{$name} ) {
    $inputs_ref->{$name};
}
elsif (defined $in{$name} ) {
      $in{$name};
}
else { $default }
}

#
#Section 1 Set Up the Table
#

$x0 = &get_value('x0',0);
$y0 = &get_value('y0',0);

$dx = &get_value('dx',.1);
$dy = &get_value('dy',.1);

$c0 = non_zero_random(-10,10);
$c1 = non_zero_random(-10,10);

$f = Formula("$c0*x^2*y + $c1*x*y");
$f->perlFunction('f');

my $i;
my @inputx  = ();
my @inputy  = ();
my @output0 = ();
my @output1 = ();
my @output2 = ();
my @output3 = ();

$n = 3;
foreach my $i (0..3) {
push(@inputx,spf($x0+$i*$dx , "%12.8g") );
};


push(@output0, spf($y0+(0)*$dy , "%12.8g")     );
push(@output1, spf($y0+(1)*$dy , "%12.8g")     );
push(@output2, spf($y0+(2)*$dy , "%12.8g")     );
push(@output3, spf($y0+(3)*$dy , "%12.8g")     );

foreach my $i (0..$n) {
   push(@output0, spf( f($x0+$i*$dx,$y0+(0)*$dy) , "%12.8g")     );
   push(@output1, spf( f($x0+$i*$dx,$y0+(1)*$dy) , "%12.8g")     );
   push(@output2, spf( f($x0+$i*$dx,$y0+(2)*$dy) , "%12.8g")     );
   push(@output3, spf( f($x0+$i*$dx,$y0+(3)*$dy) , "%12.8g")     );
};

#
# Section 2 Set Up the Integral
#
$x1 = random(-10,10);
$y1 = random(-10,10);
$deltax = random (1,5);
$deltay = random (1,5);
$x2 = $n*$deltax+$x1;
$y2 = $n*$deltay+$y1;
$l = 0;
$u = 0;
foreach my $i (0..$n-1){
  foreach my $j (0..$n-1){
          $l = $l + &min(f($x1+$i*$deltax,$y1+$j*$deltay),
                        f($x1+$i*$deltax,$y1+($j+1)*$deltay),
                        f($x1+($i+1)*$deltax,$y1+$j*$deltay),
                        f($x1+($i+1)*$deltax,$y1+($j+1)*$deltay),
                        );
          $u = $u + &max(f($x1+$i*$deltax,$y1+$j*$deltay),
                        f($x1+$i*$deltax,$y1+($j+1)*$deltay),
                        f($x1+($i+1)*$deltax,$y1+$j*$deltay),
                        f($x1+($i+1)*$deltax,$y1+($j+1)*$deltay),
                        );
  }
}

$L = Compute("$l*$deltax*$deltay");
$U = Compute("$u*$deltax*$deltay");
$Int = Compute("(($c0*(($x2)**3-($x1)**3)/3+$c1*(($x2)**2-($x1)**2)/2))*(($y2)**2-($y1)**2)/2");

Context()->texStrings;
