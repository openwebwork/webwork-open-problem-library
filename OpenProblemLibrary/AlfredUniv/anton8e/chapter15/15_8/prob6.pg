DOCUMENT();

# Load whatever macros you need for the problem
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl",   
          );
 
## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;
#TEXT(beginproblem());
Context()->variables->are(
x=>'Real',y=>'Real',u=>'Real',v=>'Real'
);

#############################
# setup the functions
$a = non_zero_random(-10,10);
$b = non_zero_random(-10,10);
$c = non_zero_random(-10,10);
$d = non_zero_random(-10,10);

$u = Formula("$a*x+$b*y")->reduce;
$v = Formula("$c*x+$d*y")->reduce;
$prod = Formula("$a*$c*x^2+($a*$d+$b*$c)*x*y+$b*$d*y^2")->reduce;

###############################
# Find the Jacobian
$ux = $u->D("x"); 
$uy = $u->D("y");

$vx = $v->D("x"); 
$vy = $v->D("y");

$J = $ux*$vy-$uy*$vx;

##############################
#Integrand in changed integral 
$int = Formula("u*e^(u*v)/$J");

##############################
# set up the region of integration
$e = non_zero_random(-5,5);
$f = $e + random(1,5);
$g = non_zero_random(-5,5);
$h = $f + random(1,5);

#######################################################
# Prevent students from being able to double click in
