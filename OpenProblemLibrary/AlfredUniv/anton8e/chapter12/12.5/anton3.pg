DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "contextLimitedVector.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector");

# the points P and Q
$P = non_zero_point3D();
$Q = non_zero_point3D(0,10);
while ($P == $Q) {$Q = non_zero_point3D(0,10)}

$PQ = Vector($Q - $P);

# another 2 points
$X = non_zero_point3D();
while ($X == $P) {$X = non_zero_point3D()}
$Y = non_zero_point3D();
while ($Y == $Q) {$Y = non_zero_point3D()}

##############################################
#  Main text

$v = Overline('v');

Context()->texStrings;
BEGIN_TEXT

Consider the vector \($v\) from \($P\) to \($Q\). $PAR
Note: For the vector answers use < >, for example <0,0,0>.
$PAR

\{BeginList("OL")\}
$ITEM
The vector \($v\) is \{ans_rule(20)\}.
$ITEMSEP

$ITEM
The length of \($v\) is \{ans_rule(20)\}.
$ITEMSEP

$ITEM
If the tail of \($v\) is at \($X\), then the tip is at
\{ans_rule(20)\}.
$ITEMSEP

$ITEM
If the tip of \($v\) is at \($Y\) then its tail is at
\{ans_rule(20)\}.
$ITEMSEP

$ITEM
What vector has the same length as \($v\), but points in the opposite
direction? \{ans_rule(20)\}.
$ITEMSEP

$ITEM
What vector has the same direction as \($v\), but is twice as long?
\{ans_rule(20)\}.

\{EndList("OL")\}
Note: For the vector answers use < >, for example <0,0,0>.
END_TEXT
Context()->normalStrings;

##################################################
#  Answers

$norm = norm($PQ);

Context("LimitedVector-coordinate");

ANS($PQ->cmp);
ANS($norm->cmp);
ANS(Point($X+$PQ)->cmp);
ANS(Point($Y-$PQ)->cmp);
ANS((-$PQ)->cmp);
ANS((2*$PQ)->cmp);

$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
