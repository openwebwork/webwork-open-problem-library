##########################################################
## Variable Declarations
Context()->variables->are(x=>'Real',t=>'Real');
## Function Definition
$a0 = random(-10,-1);
$a1 = random(2,9);

$x0 = non_zero_random(-9,9);

$f = Formula("x^$a0+1/(x^$a1)")->reduce;
$f->{limits} = [1,4];
$df = $f->D('x');
$df->{limits} = [1,4];
$m = $df->eval(x=>$x0);

$s = $f->substitute(x=>'t');
$s->{limits}=[1,4];
$t = random(2,10);
$vel = $df->eval(x=>$t);
$v = NumberWithUnits("$vel","F/mi");

