TEXT(beginproblem());
##########################################################
## Variable Declarations
Context()->variables->are(x=>'Real',t=>'Real');
## Function Definition
$a0 = non_zero_random(2,10);
$a1 = random(2,9);
$a2 = random(2,20);
$x0 = random(-9,9);

$f = Formula("(x^$a0+$a1)/$a2")->reduce;
$df = $f->D('x');
$m = $df->eval(x=>$x0);

$s = $f->substitute(x=>'t');
$t = random(2,10);
$vel = $df->eval(x=>$t);
$v = NumberWithUnits("$vel","C/hr");

