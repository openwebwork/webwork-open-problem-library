DOCUMENT();

# Load the macro file to create graphs.
loadMacros("PGgraphmacros.pl");

# Load whatever macros you need for the problem
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl");
 
## Show partial correct answers
$showPartialCorrectAnswers = 1;
## Display the problem information
TEXT(beginproblem());

## We are going to have the students choose from two different color graphs.
## This is a really fancy way to do that.


## Function definition
($xmin,$xmax) = (-1,10);
$limit = 0;
$f = Formula("x/(x^2+1)")->reduce;
###############################################
### $f has to be decreasing for this to work
$epsilon = Compute(prfmt(random(.15,.25,0.05),"%.2g"));
$N = 1;
$y = $f->eval(x=>$N);
while ($y>=$epsilon){
$N++;
$y=$f->eval(x=>$N);
} 

$N=Compute($N);

##  Graph size
##  xmin, xmax, ymin, ymax set the ranges on the axes, $size sets the actual 
## size of the image to be displayed. 


($ymin,$ymax) = (-0.2,1);
$size = [200,250];
$tex_size = 350;

## initialize the graph and add the functions in
$gr = init_graph($xmin,$ymin,$xmax,$ymax,axes=>[0,0],size=>[250,250],grid=>[$xmax-$xmin,24]);

## Just for the heck of it lets add a label to the graph
for ($x = 1;$x<=$xmax;$x++){
$y = $f->eval(x=>$x);
$gr->stamps( closed_circle($x,$y,'black') );}

##############################################
#  Text of the problem.
#  Note that texsize option specifies the scaling of the image in hardcopy, 
#  250 is 25%. 

Context()->texStrings;
BEGIN_TEXT
Click on the image to see a larger graph.
$PAR
\{ image( insertGraph($gr),width=>400, height=>400,tex_size=>250) \}
$BR
$BR
The sequence \(s_n\) graphed is decreasing and
$BCENTER \(\lim_{n\to\infty}s_n = $limit\) $ECENTER
$BR
Find \(N\) so the for \(n\geq N\), \(\vert s_n - $limit\vert < $epsilon\)
$BR
N = \{$N->ans_rule\}
END_TEXT
Context()->normalStrings;
ANS($N->cmp);

ENDDOCUMENT();
