ANS($f0->cmp());
ANS($a0->cmp());
ANS($f1->cmp());
ANS($a1->cmp());
ANS($f2->cmp());
ANS($a2->cmp());
ANS($f3->cmp());
ANS($a3->cmp());
ANS($f4->cmp());
ANS($a4->cmp());
ANS($f5->cmp());
