########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context()->variables->are(
	n => Real
);
$a = random(1, 9);
$b = random(1, 9);
do {
	$c = random(1, 9);
} until (gcd($b, $c) == 1);
$an = Formula("$a*n / ($b*n + $c)")->reduce;

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#  Setup

Context()->strings->are(
	"the series converges." => {},
	"the series diverges." => {},
	"further testing is needed." => {}
);
$converges = String("the series converges.");
$diverges = String("the series diverges.");
$furthertesting = String("further testing is needed.");

##############################################################
#  Text
Context()->texStrings;
BEGIN_TEXT
The divergence test applied to the series
\[ \sum_{n=1}^\infty $an \]
tells us that the series 
\{ pop_up_list([
$converges->string,
$diverges->string,
$furthertesting->string]) \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers

ANS($diverges->cmp());

ENDDOCUMENT();        
