DOCUMENT();

# Load whatever macros you need for the problem
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl",
          );
##################################
## Begin the code section
$showPartialCorrectAnswers = 1;
Context("Numeric")->variables->are(x=>'Real',y=>'Real',z=>'Real',u=>'Real',v=>'Real');

## The parameterized surface
$a = random(2,6);
$b = random(1,6);
$c = random(1,6);
$x = Formula("u")->reduce;
$y = Formula("v")->reduce;
$plane = Formula("$a-$b*x-$c*y")->reduce;
$z = $plane->substitute(x=>$x,y=>$y)->reduce;

$vmin = Real(0);
$vmax = Real($a/$c);
$umin = Real(0);
$umax = Formula("-$c/$b*v+$a/$b");

# the function f
$f = Formula("x+y")->reduce;
$fuv = $f->substitute(x=>$x,y=>$y,z=>$z)->reduce;

# The volume element
Context("Vector");
Context("Vector")->variables->are(x=>'Real',y=>'Real',u=>'Real',v=>'Real');
$r = Vector("$x","$y","$z");
$ru = $r->D('u')->reduce;
$rv = $r->D('v')->reduce;
$dS = Vector("$ru >< $rv")->norm;
$F = $fuv*$dS;

#  The integral answer
$int = Real(sqrt($b**2+$c**2+1)*$a**3*($c+$b)/(6*$c**2*$b**2));

Context()->texStrings;
BEGIN_TEXT
Evaluate the surface integral \(\int\limits_\sigma\!\!\int f(x,y,z)dS\)
where \(f=$f\) and \(\sigma\) is the portion of the plane \($a - $b x - $c y\) in the first octant.
Then 
$BCENTER 
\[\int\limits_\sigma\!\!\int f(x,y,z)dS = \int_a^b\int_c^d F(u,v)dudv\] 
$ECENTER
$BR
where
$BR
a = \{ans_rule()\}
$BR
b = \{ans_rule()\}
$BR
c = \{ans_rule()\}
$BR
d = \{ans_rule()\}
$BR
F(u,v) = \{ans_rule()\}
$BR
and \(\int_a^b\int_c^d F(u,v)dudv\) = \{ans_rule(30)\} 
END_TEXT
Context()->normalStrings;
ANS($vmin->cmp);
ANS($vmax->cmp);
ANS($umin->cmp);
ANS($umax->cmp);
ANS($F->cmp);
ANS($int->cmp);
ENDDOCUMENT();
