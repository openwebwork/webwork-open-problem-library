DOCUMENT();

# Load whatever macros you need for the problem
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl");
 
## Show partial correct answers
$showPartialCorrectAnswers = 1;
## Display the problem information
TEXT(beginproblem());
Context()->variables->
are(x=>'Real',y=>'Real',z=>'Real');

$z1 = random(1,5);
$z2 = random($z1+1,$z1 + 8);
$a = random(1,5);
$b = random(1,5); 
if ($b == $a){$b = $b + 1;};

Context(Vector);
Context()->flags->set(ijk=>1);
$F = Vector("$a*x","$a*y","$b*z")->reduce;

Context()->texStrings;
BEGIN_TEXT
F = \($F\) and \(\sigma\) is the portion of the cone \(z = \sqrt{x^2+y^2}\) between the planes \(z = $z1\) and \(z = $z2\) oriented with normal vectors pointing upwards. Find the flux of the flow field F across \(\sigma\):  
\{ans_rule()\}
END_TEXT
Context()->normalStrings;
ANS(Real(2*pi/3*($z2**3-$z1**3)*($b-$a))->cmp);

ENDDOCUMENT();
