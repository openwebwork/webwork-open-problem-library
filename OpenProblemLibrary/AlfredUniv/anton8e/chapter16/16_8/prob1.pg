ANS($r2->cmp);
ANS($r3->cmp);
ANS($C1int->cmp);
ANS($C2int->cmp);
ANS($C3int->cmp);
ANS($Cint->cmp);

#Stokes'
ANS($r->cmp);
ANS($curlF->cmp);
ANS($n->cmp);
ANS(Real(0)->cmp);
ANS(Real($g/$d)->cmp);
ANS(Formula("0")->cmp);
ANS(Formula("-$d/$e*x+$g/$e")->cmp);
ANS($fxy->cmp);
ANS($Cint->cmp);
