DOCUMENT();

# Load the macro file to create graphs.
loadMacros("PGgraphmacros.pl");

# Load whatever macros you need for the problem
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl");
 
## Show partial correct answers
$showPartialCorrectAnswers = 1;
## Display the problem information
TEXT(beginproblem());

## Function definition
$c = random(1,8);
$f = Formula("abs($c-x)");

###############################################
### Compute the Riemann Sums
$a = random(-8,8,.5);
$n = random(4,6);
$deltax = Compute(random(.5,2,.25));
$b = $a + $n*$deltax;

$left = 0;
$midpoint = 0;
$mi = $a + $deltax/2;
$xi = $a;
my @leftrectangles = ();
my @rightrectangles = ();
my @midrectangles = ();
for (my $i = 0;$i<$n;$i++){    
    $midpoint = $midpoint + $f->eval(x=>$mi);
    $left = $left + $f->eval(x=>$xi);
    push(@leftrectangles,$f->eval(x=>$xi));
    push(@midrectangles,$f->eval(x=>$mi));
    $xi = $xi + $deltax;
    $mi = $mi + $deltax;
    push(@rightrectangles,$f->eval(x=>$xi));
}

$right = $left - ($f->eval(x=>$a))+($f->eval(x=>$b));
$right = $deltax*$right;
$left = $deltax*$left;

$trap = ($left+$right)/2;

$midpoint = $midpoint*$deltax;

$simp = (2*$midpoint + $trap)/3;

Context()->texStrings;
BEGIN_TEXT
Estimate \(\int_{$a}^{$b} $f dx\) using \($n\) divisions and 
$BR
END_TEXT

###### LEFT
BEGIN_TEXT
Left = \{ans_rule(3)\}\(\Big(\)
END_TEXT
ANS($deltax->cmp() );

for (my $i = 0;$i<$n;$i++){
BEGIN_TEXT
\{ans_rule(6)\}
END_TEXT
ANS(Compute("$leftrectangles[$i]")->cmp() );
}
BEGIN_TEXT
\(\Big) = \) \{ans_rule(60)\}
END_TEXT
ANS($left->cmp);

###### RIGHT
BEGIN_TEXT
$BR
Right = \{ans_rule(3)\}\(\Big(\)
END_TEXT
ANS($deltax->cmp() );

for (my $i = 0;$i<$n;$i++){
BEGIN_TEXT
\{ans_rule(6)\}
END_TEXT
ANS(Compute("$rightrectangles[$i]")->cmp() );
}
BEGIN_TEXT
\(\Big) = \) \{ans_rule(60)\}
END_TEXT
ANS($right->cmp);

###### MIDPOINT
BEGIN_TEXT
$BR
Midpoint = \{ans_rule(3)\}\(\Big(\)
END_TEXT
ANS($deltax->cmp() );

for (my $i = 0;$i<$n;$i++){
BEGIN_TEXT
\{ans_rule(6)\}
END_TEXT
ANS(Compute("$midrectangles[$i]")->cmp() );
}
BEGIN_TEXT
\(\Big) = \) \{ans_rule(60)\}
END_TEXT
ANS($midpoint->cmp);

BEGIN_TEXT
$BR
Trapezoid = \{ans_rule(30)\}
$BR
Simpson's = \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;
ANS($trap->cmp);
ANS($simp->cmp);
COMMENT('Choose an arbitrary number of points, from 4 to 6, and have the student compute the Riemann sum, filling in the sum for the left, right, and midpoint.');
