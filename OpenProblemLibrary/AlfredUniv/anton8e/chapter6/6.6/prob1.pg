DOCUMENT();

# Load the macro file to create graphs.
loadMacros(
  "PGstandard.pl",
  "PGgraphmacros.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

# Load whatever macros you need for the problem
 
## Show partial correct answers
$showPartialCorrectAnswers = 1;
## Display the problem information
TEXT(beginproblem());

## Function definition
$a0 = non_zero_random(-10,10);
$a1 = non_zero_random(-10,10);
$a2 = non_zero_random(-10,10);
$F= Formula("$a2*x^2+$a1*x+$a0")->reduce;
$ta2 = 2*$a2;
Context()->noreduce('(-x)-y');
$f = Formula("$ta2*x + $a1")->reduce;
###############################################
### Compute the Riemann Sums
$a = random(-8,8);
$n = random(4,6);
$deltax = Compute(random(.2,1.8,.3));
$b = $a + $n*$deltax;

$left = 0;
$midpoint = 0;
$mi = $a + $deltax/2;
for ($i = 0;$i<$n;$i++){
$xi = $a + $i*$deltax;
$midpoint = $midpoint + $f->eval(x=>$mi);
$left = $left + $f->eval(x=>$xi);
push(@row_1,"\($mi\)");
push(@row_2,"\($xi\)");
push(@row_3,"\($midpoint\)");
push(@row_4,"\($left\)");
$mi = $mi + $deltax;
}

$right = $left - ($f->eval(x=>$a))+($f->eval(x=>$b));
$right = $deltax*$right;
$left = $deltax*$left;

$trap = ($left+$right)/2;

$midpoint = $midpoint*$deltax;

$simp = (2*$midpoint + $trap)/3;

$actual = $F->eval(x=>$b)-$F->eval(x=>$a);

Context()->texStrings;
BEGIN_TEXT
Estimate
\[ \int_{$a}^{$b} ($f) dx \]
using \( $n \) divisions, with
left endpoints, right endpoints
and midpoints.
$BR $BR
The width of each subinterval
is \(\Delta x\) = \{$deltax->ans_rule()\}.
$BR
Using left endpoints gives
\( L_{$n} = \) \{$left->ans_rule()\}.
$BR
Using right endpoints gives
\( R_{$n} = \) \{$right->ans_rule()\}.
$BR
Using midpoints gives
\( M_{$n} = \) \{$midpoint->ans_rule()\}.
$BR $BR
The exact value of the integral is
\{$actual->ans_rule()\}.
END_TEXT
Context()->normalStrings;
ANS($deltax->cmp());
ANS($left->cmp());
ANS($right->cmp());
ANS($midpoint->cmp);
ANS($actual->cmp);
ENDDOCUMENT();
