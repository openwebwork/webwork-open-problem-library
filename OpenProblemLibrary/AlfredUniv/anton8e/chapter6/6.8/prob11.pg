);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,9,1);
$anti = Formula("-(e^(-x^2)-1)/2");
$ans = $anti->eval(x=>$a);
BEGIN_TEXT

Evaluate the definite integral.
$BR \[ \int_{0}^{ $a } x e^{-x^2} \,dx \]
$BR Answer: \{ans_rule( 55) \}

END_TEXT
$exponent = $a**2;
ANS($ans->cmp);

