DOCUMENT();      

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGcourse.pl",      # Customization file for the course
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;
Context()->variables->add(y=>"Real");
Context()->strings->add(true=>{},false=>{});
##############################################################
#
#  Setup
#
#

$y0 = Compute(random(1,9));
$y = Formula("sqrt(y^2-($y0)^2)");

$x1 = Compute(random(-9,-1));
$x2 = Compute($x1+random(1,3));
$x3 = Compute($x2+random(1,3));
$x4 = Compute($x3+random(1,3));
$h = Compute(random(2,3));
$y1 = Compute($y0**2+$h);
$y2 = $y0;
$y3 = Compute($y0**2+3*$h);
$y4 = -$y0;

$ml = new_match_list();
# Create and use pop up lists 
$tf = new_select_list();
$tf->rf_print_q(~~&pop_up_list_print_q);

# Specify choices presented to students
$tf->ra_pop_up_list( 
    [ No_answer => "?", true => "True", 
      false => "False"] );

# Questions and answers
$tf -> qa ( 
"\(\left($x1,$y1\right)\)?", "true",
"\(\left($x2,$y2\right)\)?", "false",
"\(\left($x3,$y3\right)\)?", "true",
"\(\left($x4,$y4\right)\)?", "false",
);

$tf->choose(4);


##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
For the differential equations \(\frac{dy}{dx} = $y\) does the existence/uniqueness theorem guarantee that there is a solution to this equation through the point
$BR
\{ $tf->print_q() \}
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

ANS( str_cmp( $tf->ra_correct_ans ) );

ENDDOCUMENT();        
