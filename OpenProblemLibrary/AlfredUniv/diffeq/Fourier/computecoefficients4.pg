DOCUMENT();
# Load the macro file to create graphs.
loadMacros(
  "PGstandard.pl",
  "PGgraphmacros.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "unionTables.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);
 
## Show partial correct answers
$showPartialCorrectAnswers = 0;
## Display the problem information
TEXT(beginproblem());
$refreshCachedImages=1;

Context("LimitedFraction");
$a0 = Fraction(random(0,1),non_zero_random(-4,4));
$a1 = Fraction(random(0,1),non_zero_random(-4,4));
$a2 = Fraction(random(0,1),non_zero_random(-4,4));
$a3 = Fraction(random(0,1),non_zero_random(-4,4));

$b1 = Fraction(random(0,1),non_zero_random(-4,4));
$b2 = Fraction(random(0,1),non_zero_random(-4,4));
if($a0 || $a1 || $a2 || $a3 || $b1 || $b2){
$b3 = Fraction(random(0,1),non_zero_random(-4,4));}
else {$b3 = Fraction(1,non_zero_random(-4,4));};
$a0r = Real($a0);
$a1r = Real($a1);
$a2r = Real($a2);
$a3r = Real($a3);
$b1r = Real($b1);
$b2r = Real($b2);
$b3r = Real($b3);

Context()->texStrings;
BEGIN_TEXT
f is a function with the following Fourier coefficients
$BR
\{begintable(2)\}
\{row( '\( {\rm a}_0 = $a0\)',  '\(\)' )\}
\{row( '\( {\rm a}_1 =$a1\)',  '\({\rm b}_1 = $b1\)' )\}
\{row( '\( {\rm a}_2 =$a2\)',  '\({\rm b}_2 = $b2\)' )\}
\{row( '\( {\rm a}_3 =$a3\)',  '\({\rm b}_3 = $b3\)' )\}
\{endtable()\}
END_TEXT
Context()->normalStrings;


Context("Numeric");

$f[0] = Formula("$a0 + $a1*cos(x)+ $b1*sin(x) + $a2*cos(2*x) + $b2*sin(2*x) + $a3*cos(3*x)+$b3*sin(3*x)");

$f[1] = Formula("$a0 + $a1*cos(x)+ $b1*sin(x) + $a2*cos(2*x) + $b2*sin(2*x) + sin(4*x)/2");

$f[2] = Formula("$a0 + $a1*cos(5*x/3)+ $b1*sin(5*x/3) + $a2*cos(7*x/3) + $b2*sin(7*x/3) + $a3*cos(13*x/3)+$b3*sin(13*x/3)");

$f[3] = Formula("$a0 + $a1*cos(3*x/2)+ $b1*sin(3*x/2) + $a2*cos(5*x/2) + $b2*sin(5*x/2) + $a3*cos(7*x/2)+$b3*sin(7*x/2)");


##  Graph size
##  xmin, xmax, ymin, ymax set the ranges on the axes, $size sets the actual 
## size of the image to be displayed. 

($xmin,$xmax) = (-Real(pi),Real(pi));
($ymin,$ymax) = (-4,4);

$F[0] = "$f[0] for x in <$xmin,$xmax> using color:red and weight:2";
$F[1] = "$f[1] for x in <$xmin,$xmax> using color:red and weight:2";
$F[2] = "$f[2] for x in <$xmin,$xmax> using color:red and weight:2";
$F[3] = "$f[3] for x in <$xmin,$xmax> using color:red and weight:2";
## create the graph.

for $i (0..3) {
$gr[$i] = init_graph($xmin,$ymin,$xmax,$ymax,axes=>[0,0],size=>[500,500],grid=>[$xmax-$xmin,10]);
  plot_functions( $gr[$i],$F[$i] ); 
  $fig[$i]=image(insertGraph($gr[$i]),
  width=>200,height=>200,tex_size=>450);
}
@perm = shuffle(4);
@fig = @fig[@perm];
@inv = invert(@perm);

@letter = ("A", "B", "C", "D");

$popup = PopUp(["?","A","B","C","D"], $letter[$inv[0]]);

##############################################
#  Text of the problem.
#  Note that texsize option specifies the scaling of the image in hardcopy.

BEGIN_TEXT
Which of the following is the graph of f?
\{ $popup->menu() \}
$BR
$BR
$BCENTER
\{
BeginTable().
  AlignedRow([$fig[0],$fig[1]]).
  TableSpace(5,0).
  AlignedRow(["A","B"]).
  TableSpace(25,6).
  AlignedRow([$fig[2],$fig[3]]).
  TableSpace(5,0).
  AlignedRow(["C","D"]).
EndTable();
\}
$BR
(Click on a graph to enlarge it.)
$ECENTER
$BR
END_TEXT
Context()->normalStrings;
install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

ANS( $popup->cmp() );

ENDDOCUMENT();
