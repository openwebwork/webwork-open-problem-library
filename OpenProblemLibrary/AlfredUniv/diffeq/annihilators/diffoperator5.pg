########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$alpha = Real(non_zero_random(-9,9));
$n = Real(3);
$nminus1 = $n-1;
$f = Formula("x^($n-1)e^($alpha*x)");
$df = $f->D('x')->reduce;
$d2f = $df->D('x');
$d3f = $d2f->D('x');
$first = Formula("2*x*e^($alpha*x)");
$dfirst = $first->D('x');
$second = Formula("2*e^($alpha*x)");
$dsecond = $second->D('x');
$third = Formula("0");

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
The differential operator \((D-$alpha)^$n\) is supposed to annihilate the function \($f\), we will check that:
$BR
\((D)($f) = \) \{$df->ans_rule(50)\}
$BR
\((D - $alpha)($f) = \) \{$first->ans_rule(50)\}
$BR
\(D((D - $alpha)($f)) = \) \{$dfirst->ans_rule(50)\}
$BR
\((D-$alpha)^2($f) = \) \{$second->ans_rule(50)\}
$BR
\(D((D-$alpha)^2($f)) = \) \{$dsecond->ans_rule(50)\}
$BR
\((D-$alpha)^3($f) = \) \{$third->ans_rule(50)\}
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#
ANS($df->cmp);
ANS($first->cmp);
ANS($dfirst->cmp);
ANS($second->cmp);
ANS($dsecond->cmp);
ANS($third->cmp);
ENDDOCUMENT();        
