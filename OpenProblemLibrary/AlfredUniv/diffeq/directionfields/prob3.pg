DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGgraphmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


##############################################################################
##############################################################################
##
##  Create the slope field graph for y' = xy
##    
$gr1 = init_graph(-4,-4,4,4,axes=>[0,0], size=>[500,500], ticks=>[8,8]);
$dy1 = sub { my ($x,$y) = @_;
	     return $y*$y;  };
$fn1 = new VectorField( $dy1, $gr1 );
$fn1->dot_radius(0);
$fn1->x_steps(15);
$fn1->y_steps(15);
$fn1->rf_arrow_length( sub{
    my($dx,$dy)=@_;
    return(0) if sqrt($dx*$dx + $dy*$dy)==0;
    0.2*1/sqrt($dx*$dx + $dy*$dy);
} );

###############################################################################
##
## Create a list of potential solutions. The first two must be the correct 
## solutions
##

$f1 = Formula("1/(2-x)");
$f2 = Formula("-1/(1+x)");
$f3 = Formula("x/(1+x^2)");
$f4 = Formula("x/(1+2*x^2)");
$f5 = Formula("atan(x)");
$f6 = Formula("atan(3*x)");

$f1tex = $f1->TeX;
$f2tex = $f2->TeX;
$f3tex = $f3->TeX;
$f4tex = $f4->TeX;
$f5tex = $f5->TeX;
$f6tex = $f6->TeX;

$mc = new_multiple_choice();
$mc->qa("Which of the following is a solution curve to the differential equation \(\frac{dy}{dx} = f(x,y)\) whose slope field is graphed below?", "\( $f1tex\)");
$mc->extra("\($f2tex\)","\($f3tex\)","\($f4tex\)","\($f5tex\)","\($f6tex\)");

Context()->texStrings;
BEGIN_TEXT
\{ $mc->print_q() \}
$BCENTER
        \{image( insertGraph( $gr1 ), tex_size=>250, height=>250, width=>250,
	       extra_html_tags=>'alt="graph of a slope field"' )\}
$ECENTER
\{ $mc->print_a() \}
$BR
Check all that apply.
END_TEXT
Context()->normalStrings;
install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $mc->correct_ans() ) );


ENDDOCUMENT();
