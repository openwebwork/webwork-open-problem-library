DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


##############################################################################
##############################################################################
##
##  Create the slope field graph for y' = x+y
##    
$gr1 = init_graph(-4,-4,4,4,axes=>[0,0], size=>[500,500], ticks=>[8,8]);
$dy1 = sub { my ($x,$y) = @_;
	     return $x+$y;  };
$fn1 = new VectorField( $dy1, $gr1 );
$fn1->dot_radius(2);
$fn1->x_steps(15);
$fn1->y_steps(15);
$fn1->rf_arrow_length( sub{
    my($dx,$dy)=@_;
    return(0) if sqrt($dx*$dx + $dy*$dy)==0;
    0.2*1/sqrt($dx*$dx + $dy*$dy);
} );

###############################################################################
##
## Create a list of potential solutions. The first must be the correct 
## solution
##

$f1 = Formula("-1-x-e^(x)");
$f2 = Formula("1-x+x^2");
$f3 = Formula("tan(x)");
$f4 = Formula("atan(x)");

$f1tex = $f1->TeX;
$f2tex = $f2->TeX;
$f3tex = $f3->TeX;
$f4tex = $f4->TeX;

$mc = new_multiple_choice();
$mc->qa("Which of the following is a solution curve to the differential equation \(\frac{dy}{dx} = f(x,y)\) whose slope field is graphed below?", "\(y=$f1tex\)");
$mc->extra("\(y=$f2tex\)","\(y=$f3tex\)","\(y=$f4tex\)");

Context()->texStrings;
BEGIN_TEXT
\{ $mc->print_q() \}
$BCENTER
        \{image( insertGraph( $gr1 ), tex_size=>250, height=>250, width=>250,
	       extra_html_tags=>'alt="graph of a slope field"' )\}
$ECENTER
\{ $mc->print_a() \}
END_TEXT
Context()->normalStrings;
install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $mc->correct_ans() ) );


ENDDOCUMENT();
