DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "PGcourse.pl",
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"For the differential equation \(\frac{dy}{dx}=y^2+\cos(x)\) check all that apply", 
"nonhomogeneous$BR",                
);
$mc -> extra(
"homogeneous$BR",
"logistic$BR",
"linear$BR",
"separable$BR",
"autonomous$BR",
);


##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#
install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;
ANS( checkbox_cmp( $mc->correct_ans() ) );
ENDDOCUMENT();