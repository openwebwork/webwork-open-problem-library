DOCUMENT();      

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"MathObjects.pl",
"PGcourse.pl",
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 0;

##############################################################
#
#  Setup
#
#
Context()->variables->{namePattern} = qr/[a-z][a-z0-9_]*'*/i;
Context()->variables->are("x"=>"Real","y"=>"Real","y'"=>"Real","y''"=>"Real");

$diffeqn = Formula("xy''+xy'+y")->reduce;

$singular =List(0); 
##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Write the differential equation \($diffeqn=0\) in standard form:
$BR
\{ans_rule(5)\}\(y^{\prime\prime}\)+\{ans_rule(5)\}\(y^{\prime}\)+\{ans_rule(5)\}\(y = 0\)
$BR
List the singular points of the differential equation:
$BR
\(x = \) \{$singular->ans_rule\}

END_TEXT
Context()->normalStrings;
##############################################################
#
#  Answers
#
#
ANS(Compute("1")->cmp);
ANS(Compute("1")->cmp);
ANS(Compute("1/x")->cmp);
ANS($singular->cmp());



ENDDOCUMENT();        
