########################################################################

DOCUMENT();      

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"MathObjects.pl",
"PGcourse.pl",
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 0;

##############################################################
#
#  Setup
#
#
Context()->variables->{namePattern} = qr/[a-z][a-z0-9_]*'*/i;
Context()->variables->are("x"=>"Real","y"=>"Real","y'"=>"Real","y''"=>"Real");

$a = random(2,9);
$b = random(3,7);
$diffeqn = Formula("(x^2-($a)^2)/x*y''+$b*y'+y")->reduce;

$singular =List($a,-$a); 
##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Write the differential equation \($diffeqn=0\) in standard form:
\[\hbox{\{ans_rule(5)\}} y^{\prime\prime}+\frac{\hbox{\{ans_rule(5)\}}}{\hbox{\{ans_rule(5)\}}}y^\prime+\frac{\hbox{\{ans_rule(5)\}}}{\hbox{\{ans_rule(5)\}}}y = 0\]
$BR
List the singular points of the differential equation:
$BR
\(x = \) \{$singular->ans_rule\}

END_TEXT
Context()->normalStrings;
##############################################################
#
#  Answers
#
#
ANS(Compute("1")->cmp);
ANS(Compute("$b*x")->cmp);
ANS(Compute("x^2-($a)^2")->cmp);
ANS(Compute("x")->cmp);
ANS(Compute("x^2-($a)^2")->cmp);
ANS($singular->cmp());



ENDDOCUMENT();        
