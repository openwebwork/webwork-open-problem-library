##############################################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextLimitedPolynomial.pl",
"parserAssignment.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################
#  Setup

Context("LimitedPolynomial-Strict")->variables->add(y=>"Real");
parser::Assignment->Allow;


$a = random(2,9,1);
$b = random(2,9,1);
while ($a==$b) { $b = random(2,9,1); }
$c = non_zero_random(-9,9,1);
$m = -$a/$b;
$int = $c/$b;

$answer = Compute("y = (-$a/$b) x + $c/$b");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write the equation for the line 
\( $a x + $b y = $c \) in the form 
\( y = m x + b \), and enter it in this form.
$BR
$BR
\{ ans_rule(30) \}
\{ AnswerFormatHelp("equations") \}

$BR
$BR
The slope is \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$BR
The ${BITALIC}y${EITALIC}-intercept is \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}

END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );
ANS(Real("$m")->cmp(tolerance=>"0.001",tolType=>"absolute") );
ANS(Real("$int")->cmp(tolerance=>"0.001",tolType=>"absolute") );



COMMENT('MathObject version');
ENDDOCUMENT();
