########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   "PGcourse.pl",      # Customization file for the course
   "parserFormulaUpToConstant.pl",
   "Alfredmacros.pl",
);
jsmathmode();

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");
Context()->variables->are(t=>'Real');
$m = Compute(non_zero_random(-20,20));
$b = Compute(non_zero_random(-20,20));
$f = FormulaUpToConstant("$m*t+C");
$IVP = Formula("$m*t+$b");

$t = Compute(random(1,9));
$ft = $IVP->eval(t=>"$t");

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
If \(f^\prime(t)=$m\) then the most general formula for f is   
\(\displaystyle\int \hbox{\{ans_rule(3)\}} \hskip 2pt dt = \) \{$f->ans_rule\}.
$BR
If \(f($t) = $ft\) then \(f(t) = \) \{ans_rule\}.
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#
ANS($m->cmp);
ANS($f->cmp);
ANS($IVP->cmp);
ENDDOCUMENT();        
