DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl", 
"answerHints.pl",  							
"PGcourse.pl"         # Customization file for the course
);

TEXT(beginproblem());
########################################
# Setup

Context("Numeric");
$showPartialCorrectAnswers = 1;

Context()->flags->set(reduceConstants=>0);
Context()->flags->set(reduceConstantFunctions=>0);

$circum=random(70.0,90.0,1.0);
$err=0.5;

$max_err = Compute("2*$circum*$err/pi");
$rel_err = Compute("(2*$circum*$err/pi)/(4*pi*($circum/(2*pi))**2)");

########################################
# Main Text

Context()->texStrings;
BEGIN_TEXT
The circumference of a sphere was measured to be \({$circum:%5.3f}\) cm with a
possible error of \(\pm{$err:%0.5f}\) cm.  Use
 linear approximation to estimate
the maximum error in the calculated surface area.
\(\pm\) \{ ans_rule(30) \}

$PAR 
Estimate the relative error in
the calculated surface area. \(\pm\)\{ ans_rule(30) \}

END_TEXT
Context()->normalStrings;

########################################

ANS($max_err->cmp);
ANS($rel_err->cmp()
->withPostFilter(AnswerHints( 
  Formula("100*$rel_err") => "Give the relative error, not the relative percent error",
))
);

########################################

COMMENT('MathObject version');
ENDDOCUMENT();