########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "Alfredmacros.pl",
   "parserNumberWithUnits.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   "PGcourse.pl",      # Customization file for the course
);
jsmathmode();
# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");
Context()->variables->add(d=>"Real",S=>"Real",r=>"Real",theta=>"Real",dS=>"Real",dtheta=>"Real",dr=>"Real");

$rpm = Compute(random(2500,4500,100));
$theta = Compute(random(30,50));
$speedrate = Compute(random(8,14));
$rpmrate = Compute(random(30,70));

$rate = $speedrate/1000;

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Let S be the speed of a motorcycle in mph, r be the rpm's the motor is spinning at, and \(\theta\) (typed as theta) be the angle at which the throttle is twisted. At \($rpm\) rpm the throttle is twisted at an angle of \($theta^o\) and the motorcycle 's speed changes at a rate of \(\frac{$speedrate mph}{1000 rpm}\frac{mph}{rpm}\) while the rpms change at a rate of \($rpmrate \frac{rpm}{degree}\)
$BR
\(\displaystyle\frac{\hbox{\{ans_rule(3)\}}}{\hbox{\{ans_rule(3)\}}}\Big\vert_{r=\hbox{\{ans_rule(3)\}}}= $rate \frac{mph}{rpm}\\)
$BR
$BR
\(\displaystyle\frac{\hbox{\{ans_rule(3)\}}}{\hbox{\{ans_rule(3)\}}}\Big\vert_{\theta=\hbox{\{ans_rule(3)\}}}=$rpmrate\frac{rpm}{degree}\)
$BR
$BR
\(\displaystyle\frac{dS}{d\theta}\Big\vert_{\theta=$theta}=\hbox{\{ans_rule\}}\)
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#
ANS(Compute("dS")->cmp() );
ANS(Compute("dr")->cmp() );
ANS($rpm->cmp() );

ANS(Compute("dr")->cmp() );
ANS(Compute("dtheta")->cmp() );
ANS($theta->cmp() );

ANS(Compute("$rate*$rpmrate")->cmp() );
ENDDOCUMENT();        
