DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "contextFraction.pl",
   "parserFormulaUpToConstant.pl",
   "Alfredmacros.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   "PGcourse.pl",      # Customization file for the course
);
jsmathmode();
# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");
Context()->{error}{msg}{"Note: there is always more than one possibility"} 
  = "You forgot the constant!";

$numeric = Context()->copy;

Context("LimitedFraction");

$m = Real(random(2,40));
$n = -$m+1;
$den = Real(random(2,10));
$newden = $den+1;

$anti = FormulaUpToConstant($numeric,"x^($n)/($n)+$den/($newden)x^(($newden)/$den)");

##############################################################
#
#  Text
#
#
Context()->texStrings;
BEGIN_TEXT
\(\displaystyle\int\left( \frac{1}{x^{$m}}+\sqrt[$den]{x}\right) dx = \int\left( x^{\hbox{\{ans_rule(3)\}}}+x^{\hbox{\{ans_rule(3)\}}} \right)dx \) =\{ans_rule(30)\}
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#
ANS(Compute("-$m")->cmp());
ANS(Fraction("1","$den")->cmp());

ANS($anti->cmp() );

ENDDOCUMENT();        
