DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
 "contextFraction.pl",
   "Alfredmacros.pl",
 "MathObjects.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

$c1 = random(3, 15, 2);
$d1 = random(3, 15, 2); 
$g1=Formula("$c1 x^{$d1}");

$c2 = random(-15, -3, 2);
$d2 = random(-15, -3, 2); 
$g2=Formula("$c2 x^{$d2}");

$a1 = random(3, 15, 2);
$b1 = random(3, 15, 2); 
$f1=Formula("$a1/{x^{$b1}}");

$a2 = random(3, 15, 2);
$b2 = random(3, 15, 2); 
$f2=Formula("$c2/{$a2 {x^{$b2}}}");

$a3 = random(2, 6, 1);
$b3 = random(7, 12, 1); 
$f3=Formula("$c2 x^($a3//$b3)");





###################################
# Main text

Context()->texStrings;
BEGIN_TEXT

Compute the following derivatives.
$BR
$BR
\(\displaystyle{\frac{d}{dx}\left( $g1 \right)}\)
      = \{ans_rule(20) \}
$BR
$BR

\(\displaystyle{\frac{d}{dx}\left( $g2 \right)}\)
      = \{ans_rule(20) \}
$BR
$BR

\(\displaystyle{\frac{d}{dx}\left( $f1 \right)}\)
      = \{ans_rule(20) \}
$BR
$BR
\(\displaystyle{\frac{d}{dx}\left( $f2 \right)}\)
      = \{ans_rule(20) \}
$BR
$BR
\(\displaystyle{\frac{d}{dx}\left( $f3 \right)}\)
      = \{ans_rule(20) \}

$BR

END_TEXT
Context()->normalStrings;

###################################
# Answers

$ans3=$g1->D('x')->reduce;
ANS(Formula($ans3)->cmp);

$ans4=$g2->D('x')->reduce;
ANS(Formula($ans4)->cmp);

$ans1=$f1->D('x')->reduce;
ANS(Formula($ans1)->cmp);

$ans2=$f2->D('x')->reduce;
ANS(Formula($ans2)->cmp);

$ans5=$f3->D('x')->reduce;
ANS(Formula($ans5)->cmp);





