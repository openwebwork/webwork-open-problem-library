DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   "PGcourse.pl",      # Customization file for the course
   "contextFraction.pl",
   "Alfredmacros.pl",
);
jsmathmode();

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Fraction-NoDecimals");
$a = Compute(non_zero_random(-10,10));
$num = Compute(random(2,20));
$den = Compute(random(2,20));

$exponent = Fraction("$num","$den");
$derexponent = Fraction("$num-$den","$den");
$dercoefficient = Fraction("$a*$exponent");


##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Rewrite \(f(x)\) as a power function, and then find its derivative.
$BR
$BR
\(\displaystyle f(x) = $a \sqrt [$den]{x^{$num}} = {\hbox{\{$exponent->ans_rule(2)\}}}x^{\hbox{\{$a->ans_rule(2)\}}}\)
$BR
$BR
$BR
\(\displaystyle \frac{df}{dx} = {\hbox{\{$dercoefficient->ans_rule(3)\}}}x^{\hbox{\{$derexponent->ans_rule(2)\}}}\)
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#
ANS($a->cmp());
ANS($exponent->cmp() );
ANS($dercoefficient->cmp() );
ANS($derexponent->cmp() );
ENDDOCUMENT();        
