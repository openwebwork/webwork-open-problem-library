DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

$a1 = random(9, 13, 1);
$r1 = random(2,5,1);
$b1 = $a1 - $r1;
Context()->flags->set(reduceConstants=>0);
$f1=Formula("x^($a1//$b1)");

$a2 = random(-9, -2, 1);
$r2 = random(1,5,1);
$b2 = $r2 - $a2;
Context()->flags->set(reduceConstants=>0);
$f2=Formula("x^($a2//$b2)");

$a3 = random(-9, -2, 1);
$r3 = random(1,5,1);
$b3 = $r3 - $a3;
Context()->flags->set(reduceConstants=>0);
$f3=Formula("$a3 / \sqrt[$a1]{x^($b2)}");



###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
$BR
Compute the following derivatives.
$BR
$BR
\(\displaystyle{\frac{d}{dx}($f1)}\) = \{ans_rule(20) \}
$BR
$BR
\(\displaystyle{\frac{d}{dx}($f2)}\) = \{ans_rule(20) \}
$BR
$BR
\(\displaystyle{\frac{d}{dx}(\frac{$a2}{$r1\sqrt[$b2]{x^{$a1}}}})\) = \{ans_rule(20) \} 


END_TEXT
Context()->normalStrings;

###################################
# Answers

$ans1=$f1->D('x');
ANS(Formula($ans1)->with(limits => [.5,2])->cmp);
$ans2=$f2->D('x');
ANS(Formula($ans2)->with(limits => [.5,2])->cmp);


