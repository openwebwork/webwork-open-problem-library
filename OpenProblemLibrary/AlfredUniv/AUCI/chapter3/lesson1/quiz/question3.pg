DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "contextFraction.pl",
   "Alfredmacros.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   "PGcourse.pl",      # Customization file for the course
);
jsmathmode();
# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("LimitedFraction");

@power = (["linear",Fraction("1","1")],
          ["quadratic",Fraction("2","1")],
          ["cubic",Fraction("3","1")],
          ["square root",Fraction("1","2")],
          ["cube root",Fraction("1","3")],
          ["reciprocal",Fraction("-1","1")],
          ["reciprocal square",Fraction("-2","1")]);

$index = Compute(random(0,$#power));


##############################################################
#
#  Text
#
#
Context()->texStrings;
BEGIN_TEXT
If y = f(x) is the basic $power[$index][0] power function, then \(y = x^{\hbox{\{ans_rule(3)\}}}\)

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS($power[$index][1]->cmp());
