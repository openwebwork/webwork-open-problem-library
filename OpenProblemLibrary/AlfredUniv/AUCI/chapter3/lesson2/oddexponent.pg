##DESCRIPTION
##  Evaluate an infinite limit of a fraction of two polynomials
##ENDDESCRIPTION

##KEYWORDS('Calculus')
##Tagged by ynw2d

##DBsubject('Calculus')
##DBchapter('Limits and Derivatives')
## DBsection('Limits at Infinity; Horizontal Asymptotes')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(10,40,1);
$b1 = random(10,40,1);
$sa = random(-1,1,2);
$sb = random(-1,1,2);
$a  = $a1 * $sa;
$b  = $b1 * $sb;

BEGIN_TEXT
$PAR
Evaluate the following limits.  If needed, enter INF for \( \infty \) and MINF for \( -\infty \).
$PAR
(a)
\(\displaystyle \lim_{x \rightarrow \infty} \left( $a x^2 + $b x^3 \right) = \)
\{ ans_rule(10) \}
$BR
$PAR
(b)
\(\displaystyle \lim_{x \rightarrow -\infty} \left( $a x^2 + $b x^3 \right) = \)
\{ ans_rule(10) \}
END_TEXT
if ($sb == 1) {$ans1 = 'INF';} else {$ans1 = 'MINF';}
if ($sb == 1) {$ans2 = 'MINF';} else {$ans2 = 'INF';}

ANS(num_cmp($ans1, strings=>['INF','MINF']));
ANS(num_cmp($ans2, strings=>['INF','MINF']));
ENDDOCUMENT();
