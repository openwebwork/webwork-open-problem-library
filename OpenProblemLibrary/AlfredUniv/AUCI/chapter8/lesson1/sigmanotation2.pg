## Author('Darwyn Cook')
## Institution('Alfred University')
## DBsubject('Calculus')
## DBchapter('Infinite Sequences and Series')
## DBsection('Sigma Notation')                     
## AuthorText1('Petrillo')
## TitleText1('AUCI')
## EditionText1('1')
## Section1('8.1')
## Problem1('')
## KEYWORDS('calculus' 'sigma' 'sum' 'series')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",         
           "PGanswermacros.pl",
           "MathObjects.pl",
);

TEXT(beginproblem());
Context()->flags->set(reduceConstants=>0);
Context()->variables->are(k=>"Real");
Context()->reduction->set('(-x)+y'=>0,'(-x)-y'=>0);

$initial = Compute(random(10,20));
$final = Compute(random(40,60));

$a = Compute(non_zero_random(-9,9));
$b = Compute(non_zero_random(-9,9));
if($a == 1){$a++;};
if($a == -1){$a--;};
if($b == 1){$b++;};
if($b == -1){$b--;};


$f = Formula("$a*k^3+$b*k")->reduce;
$a0 = $f->substitute(k=>"$initial");
$a1 = $f->substitute(k=>"$initial+1");
$a2 = $f->substitute(k=>"$initial+2");
$a3 = $f->substitute(k=>"$initial+3");
$an = $f->substitute(k=>"$final");

$sum = Compute("$a*(($final*($final+1)/2)^2 - (($initial-1)*$initial/2)^2)  + $b*($final*($final+1)/2 - ($initial-1)*$initial/2)");
Context()->texStrings;
BEGIN_TEXT
\(
\begin{aligned}
&($a0) + ($a1) + ($a2) + ($a3) + \ldots + ($an) \\
&\\
&= \displaystyle\sum_{k=\hbox{\{ans_rule(1)\}}}^{\hbox{\{ans_rule(1)\}}} \hbox{\{ans_rule(7)\}} \\
&\\
&= \sum_{k=1}^{\hbox{\{ans_rule(1)\}}} \hbox{\{ans_rule(7)\}}-\sum_{k=1}^{\hbox{\{ans_rule(1)\}}} \hbox{\{ans_rule(7)\}}  \\
&\\
&=$a\frac{\left(\hbox{\{ans_rule(1)\}}\right)^2*\left(\hbox{\{ans_rule(1)\}}\right)^2}{4}+$b\frac{\hbox{\{ans_rule(1)\}}*\hbox{\{ans_rule(1)\}}}{2}-\left($a\frac{\left(\hbox{\{ans_rule(1)\}}\right)^2*\left(\hbox{\{ans_rule(1)\}}\right)^2}{4}+$b\frac{\hbox{\{ans_rule(1)\}}*\hbox{\{ans_rule(1)\}}}{2}\right)\\
&\\
&= \hbox{\{ans_rule(30)\}}
\end{aligned} 
\).
END_TEXT
Context()->normalStrings;

ANS($initial->cmp() );
ANS($final->cmp() );
ANS($f->cmp() );

ANS($final->cmp() );
ANS($f->cmp() );

ANS(Compute("$initial-1")->cmp() );
ANS($f->cmp() );

ANS($final->cmp());
ANS(Compute("$final+1")->cmp() );
ANS($final->cmp());
ANS(Compute("$final+1")->cmp() );

ANS(Compute("$initial-1")->cmp());
ANS($initial->cmp() );
ANS(Compute("$initial-1")->cmp());
ANS($initial->cmp() );

ANS($sum->cmp() );




ENDDOCUMENT();        # This should be the last executable line in the problem.
