DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
"parserPopUp.pl",
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = Compute(random(2,20));
$b = Compute(random(2,20));
$c = Compute(random(2,20));
$d = Compute(random(2,20));


$twoc = Compute("2*$c");
$csquared = Compute("($c)^2");

@f = ("x^2\sqrt{x+$a}","\frac{\ln^{$b}(x)}{x}","\sqrt[$c]{e^{$d x}}","\cos^{$a}(x)\sin(x)","\cos($c x)","\frac{2x+$twoc}{x^2+$twoc x + $csquared}");
@u = ("x+$a","ln(x)","$d*x/$c","cos(x)","$c*x","x^2+$twoc*x + $csquared");

$lower = Compute(random(1,5));
$upper = $lower + Compute(random(1,5));


$i = Compute(random(0,$#f));
$fi = Formula($u[$i]);
$loweru = $fi->substitute(x=>"$lower");
$upperu = $fi->substitute(x=>"$upper");

Context()->texStrings;
BEGIN_TEXT
For the definite integral \(\int_{$lower}^{$upper} $f[$i] dx\), if you perform the u-substitution \(u = $fi\) you can also change the limits of integration to:
$BR
$BR
lower = \{ans_rule\}
$BR
$BR
upper = \{ans_rule\}
END_TEXT
Context()->normalStrings;

ANS( $loweru->cmp() );
ANS( $upperu->cmp() );
ENDDOCUMENT();        # This should be the last executable line in the problem.
