TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$mc = new_multiple_choice();
$mc->qa(
"If k and Y are constants, which of the following differential equations models the following statement: The acceleration of y is proportional to y?", 
"\(y^{\prime\prime} = ky\)"
);
$mc->makeLast("\(y^{\prime\prime} = k\)","\(y^{\prime\prime} = ky\)","\(y^{\prime} = ky\)", "\(y^{\prime} = -k(y - Y)\)");

Context()->texStrings;
BEGIN_TEXT
\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $mc->correct_ans() ) );

