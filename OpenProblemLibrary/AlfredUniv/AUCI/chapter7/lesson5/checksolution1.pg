DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "MathObjects.pl");

TEXT(beginproblem());
#########################################################
##
## Set up the context to allow ' in variable names
##
Context()->variables->{namePattern} = qr/[a-z][a-z0-9_]*'*/i;
Context()->variables->are("K"=>"Real","K'"=>"Real","t"=>"Real");

$c1 = Compute(random(2,9));
$lambda = Compute(random(2,9));
$squared = Compute("$lambda^2");
$y = Formula("$c1*cos($lambda*t)");
$dy = $y->D('t');
$d2y = $dy->D('t');

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Therefore y satisfies which of the following differential equations?(Check all that apply)", 
"\(y^{\prime} = -$lambda y \)$BR", 
"\( y^{\prime\prime} = -$squared y \)$BR",
);

$mc -> makeLast(
"\(y^\prime = $lambda y \)$BR", 
"\(y^{\prime} = -$lambda y \)$BR",            
"\( y^{\prime\prime} = $squared y \)$BR",
"\( y^{\prime\prime} = -$squared y \)$BR",
);

Context()->texStrings;
BEGIN_TEXT
If y(t) = \($y\), then
$BR
\(y^\prime(t) = \) \{ans_rule\}
$BR
and
\(y^{\prime\prime}(t) = \) \{ans_rule\}
$BR
\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}

END_TEXT
Context()->normalStrings;

ANS($dy->cmp() );
ANS($d2y->cmp() );
ANS( checkbox_cmp( $mc->correct_ans() ) );
ENDDOCUMENT();        # This should be the last executable line in the problem.