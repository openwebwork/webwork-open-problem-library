$showPartialCorrectAnswers = 1;

$dx = 11;
$dy = 130-84;
$ratio = 130/84;
$m = $dy/$dx;
$disp_m = "$dy/$dx";
$b = ($ratio)**(1/$dx);
$disp_b = round($b*10000)/10000;
$line = Compute("84 + $dy/$dx t");
$exp = Compute("84(130/84)^(t/$dx)");
$year = random(2010,2020,1);
$t=$year-1990;

$line_pop = $line->eval(t=>"$t");
$exp_pop = $exp->eval(t=>"$t");

