########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   "PGcourse.pl",      # Customization file for the course
   "contextFraction.pl",
   "Alfredmacros.pl",
);
jsmathmode();

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");
Context()->variables->add(g=>"Real");

$n = Compute(non_zero_random(3,11,2));
$g = Formula("sqrt(x^$n)");
$dgdx = $g->D('x');

$f = Formula("e^g");
$dfdg = $f->D('g');

$fx = $f->substitute(g=>"$g");
$dfdx = $fx->D('x');

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
\(f(x) = $fx\). Then \(f(x) = f(g(x))\) where
$BR
\(g(x) = \) \{ans_rule\}
$BR
\(g^\prime(x) = \)\{ans_rule\}
$BR
\(f(g) = \) \{ans_rule\} (Your answers should only contain g's, not x's)
$BR
\({\rm f}^\prime(g) = \) \{ans_rule\}
$BR
$BR
Therefore \({\rm f}^\prime(x) = {\rm f}^\prime(g)g^\prime(x) = \) \{ans_rule\}
$BR
$BBOLD Note $EBOLD Your final answer can only contain x's.
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#
ANS($g->cmp() );
ANS($dgdx->cmp() );

ANS($f->cmp() );
ANS($dfdg->cmp() );

ANS($dfdx->cmp() );

ENDDOCUMENT();        
