DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "PGchoicemacros.pl",
   "MathObjects.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   "PGcourse.pl",      # Customization file for the course
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");
Context()->strings->add(none=>{});

$zero1 = Compute(non_zero_random(-9,-2));
$zero2 = $zero1 + Compute(random(1,4));

$a = Compute(non_zero_random(2,9));
$b = Compute(random(1,3));
$zero3 = Compute("abs($zero2)+$b");
$f = Formula("($a*x+$a*$zero3)/(x^2+($zero1+$zero2)*x+$zero1*$zero2)")->reduce;
$root1 = Real("-$zero1");
$root2 = Real("-$zero2");

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
$BR
Analyze the behavior of the function \(y = $f\) near the vertical asymptote \(x = $root1\):
$BR
$BR
(a) \(\lim\limits_{x\rightarrow $root1^-}$f = \) \{ans_rule\}
$BR
$BR
(b) \(\lim\limits_{x\rightarrow $root1^+}$f = \) \{ans_rule\}
$BR
$BR
(c) \(\lim\limits_{x\rightarrow $root1}$f = \) \{ans_rule\}
$BR
$BR
$BBOLD Note: $EBOLD Enter 'dne' if the limit does not exist, 'inf' for \(\infty\), and '-inf' for \(-\infty\).

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS(Compute("-infinity")->cmp() );
ANS(Compute("infinity")->cmp() );
ANS(String("DNE")->cmp() );


ENDDOCUMENT();        
