#for ($j = 0; $j <=2; $j++){ ANS(num_cmp( $neg[$j] ) )};
#ANS(fun_cmp( $hor, vars=>['I','N','F','T','Y'] ) );
#ANS(fun_cmp( $hor, vars=>['I','N','F','T','Y'] ) );
