DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$heat = 0;
$wave = 1;
$laplace = 2;

$correct = $heat;
@therest = ($heat,$wave,$laplace);
splice(@therest,$correct,1);

$PDE[$heat] = "\(\displaystyle k\frac{\partial^2 u}{\partial x^2} = \frac{\partial u}{\partial t}, \quad 0<x<L, \quad t>0\)$BR"; 
$PDE[$wave] = "\(\displaystyle\alpha^2\frac{\partial^2 u}{\partial x^2} = \frac{\partial^2 u}{\partial t^2}, \quad 0<x<L, \quad t>0\)$BR";
$PDE[$laplace] = "\(\displaystyle\frac{\partial^2 u}{\partial x^2} +\frac{\partial^2 u}{\partial y^2}=0, \quad 0<x<L, \quad 0<y<b\)$BR";

$boundary[$heat] = 
"\( 
\begin{aligned} 
u(0,t) &= 0 & \frac{\partial u}{\partial x}\Bigg\vert_{x=L} &= 0, &t > 0\\
u(x,0) & = f(x),&& &0 < x < L\\
&&&&\\
&&&&\\
\end{aligned}\)";

$boundary[$wave] = 
"\( 
\begin{aligned} 
u(0,t) &= 0 &u(L,t) &= 0, &t > 0\\
u(x,0) & = f(x),&\frac{\partial u}{\partial t}\Bigg\vert_{t=0}  &= 0, &0 < x < L\\
&&&&\\
&&&&\\
\end{aligned}\)";

$boundary[$laplace] = "\( 
\begin{aligned} 
\frac{\partial u}{\partial x}\Bigg\vert_{x=0} & = 0, 
&\frac{\partial u}{\partial x}\Bigg\vert_{x=L}  &= 0, &0 < y < b\\
u(x,0) &= 0, &u(x,b) &= f(x), &0 < x < L\\
&&&&\\
&&&&\\
\end{aligned}\)";

$de = new_multiple_choice();
$de->qa(
"Partial Differential Equation", 
$PDE[$correct]
);
$de->extra(
$PDE[$therest[0]],
$PDE[$therest[1]],
);

$bdry = new_multiple_choice();
$bdry->qa(
"Boundary/Initial Conditions", 
$boundary[$correct],
);
$bdry->extra(
$boundary[$therest[0]],
$boundary[$therest[1]],
);


##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
The left end of a rod of length L is held at temperature 0, and the right end is insulated. The initial temperature is f(x) throughout.
$BR
Choose the PDE and boundary/initial conditions that model this scenario.
$BR
$BR
\{ $de->print_q() \}
$BR
\{ $de->print_a() \}
$BR
\{ $bdry->print_q() \}
$BR
\{ $bdry->print_a() \}
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $de->correct_ans() ) );
ANS( radio_cmp( $bdry->correct_ans() ) );
ENDDOCUMENT();        
