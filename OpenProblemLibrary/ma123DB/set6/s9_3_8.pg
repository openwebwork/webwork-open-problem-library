## Problem1('8')
## KEYWORDS('Differential Equation', 'Separable')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,10,1);
$b = random(2,6,1);
$d = random(2,17,1);

BEGIN_TEXT
Solve the separable differential equation for \(u\). 
  \[  \frac{du}{dt} = e^{$b u + $a t} \] $BR

Use the following initial condition: \( u(0) = $d \)
$BR$BR
\(u =\) \{ ans_rule(45) \}

END_TEXT

$ans = "-ln(e^(-$d*$b) + ($b/$a) - ($b/$a)*e^($a*t))/$b";

ANS(fun_cmp($ans, vars=>["t"],limits=>[-9,0]));
ENDDOCUMENT();        # This should be the last executable line in the problem.
