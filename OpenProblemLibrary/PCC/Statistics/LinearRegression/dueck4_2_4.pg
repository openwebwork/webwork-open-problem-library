TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

for($i=0; $i<10; $i++){
	$x[$i] = random(25,80,1);
	$y[$i] = int(1.2*$x[$i] + random(-4,4));
}

$sx =0;
$sy =0;
$sxy =0;
$sx2 =0;
$sy2 =0;
$meanx =0;
$meany =0;

for($i=0; $i<10; $i++) {
	$sx = $sx + $x[$i];
	$sy = $sy + $y[$i];
	$sxy = $sxy + ($x[$i]*$y[$i]);
	$sx2 = $sx2 + ($x[$i]**2);
	$sy2 = $sy2 + ($y[$i]**2);
	$meanx = $meanx+$x[$i];
	$meany = $meany+$y[$i];

}
$meanx = $meanx/10;
$meany = $meany/10;
$ssxy = $sxy-(($sx*$sy)/10);
$ssx = $sx2-(($sx**2)/10);
$ssy = $sy2-(($sy**2)/10);

$r = $ssxy/sqrt($ssx*$ssy);
$b1 = $ssxy/$ssx;
$b0 = $meany-$b1*$meanx;

$popup = PopUp(["?", "yes", "no"], "no" );

