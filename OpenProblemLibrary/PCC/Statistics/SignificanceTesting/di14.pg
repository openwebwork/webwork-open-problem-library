\{ $smc[3]-> print_a() \} 
$PAR
END_TEXT

ANS(radio_cmp($smc[0]->correct_ans));
ANS(radio_cmp($smc[1]->correct_ans));
ANS(radio_cmp($smc[2]->correct_ans));
ANS(radio_cmp($smc[3]->correct_ans));

