#
# ENDDESCRIPTION

## DBCCSS('6.EE.2.c')
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Evaluating expressions)
## Institution(PCC)
## Author(Alex Jordan, Carl Yao, Chris Hughes)
## Level(3)
## KEYWORDS('evaluate','linear','integer')




##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PCCmacros.pl",
  "PGcourse.pl",
);

##############################################

Context("Numeric");
$var1 = RandomVariableName(type=>variable);
do {$var2 = RandomVariableName(type=>variable);} until ($var1 ne $var2);
Context()->variables->are($var1=>'Real',$var2=>'Real');

do {
   $a = -random(2,5,1);
   do {$b = -random(1,5,1);} until ($a!=$b);
   do {$c = -random(1,5,1);} until ( ($a!=$c) && ($b!=$c) );

   $func1 = Compute("$a*($var1)**2*$var2")->reduce;
   $func2 = Compute("($a*$var1)**2*$var2")->reduce;

   $ans1 = Compute($func1->eval($var1=>$b,$var2=>$c));
   $ans2 = Compute($func2->eval($var1=>$b,$var2=>$c));
} until ( (abs($ans1)<100) && (abs($ans2)<100) );

Context("LimitedNumeric");
$ans1 = Compute($ans1);
$ans2 = Compute($ans2);


##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate the following expressions.

a. Evaluate [`[$func1]`] when [`[$var1]=[$b]`] and [`[$var2]=[$c]`].

    [``[$func1]=``]  [_______]{$ans1}

a. Evaluate [`[$func2]`] when [`[$var1]=[$b]`] and [`[$var2]=[$c]`].

    [``[$func2]=``]  [_______]{$ans2}

END_PGML

##############################################

$s1 = ($a*$b)**2;

BEGIN_PGML_SOLUTION

a. We substitute [`[$var1]=[$b]`] and [`[$var2]=[$c]`] into [`[$func1]`]:

    [``\begin{aligned}
    [$func1] &= [$a]([$b])^2([$c]) \\
        &= [$a]([$b**2])([$c]) \\
        &= [$ans1]
    \end{aligned}``]

a. We substitute [`[$var1]=[$b]`] and [`[$var2]=[$c]`] into [`[$func2]`]:

    [``\begin{aligned}
    [$func2] &= [[$a]([$b])]^2([$c]) \\
        &= [[$a*$b]]^2([$c]) \\
        &= [[$s1]]([$c]) \\
        &= [$ans2]
    \end{aligned}``]

END_PGML_SOLUTION

ENDDOCUMENT();


