## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Slope-Intercept','Linear Equations')
## KEYWORDS('slope','intercept','slope-intercept','line','equation','fraction')
## DBCCSS('8.EE')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
