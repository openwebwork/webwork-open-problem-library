## DBsubject('Algebra')
## DBchapter('Polynomial and Rational Functions')
## DBsection('Polynomial Functions')
## KEYWORDS('exponent','multiply','polynomial','binomial','FOIL','cubic')
## DBCCSS('A-APR.1')
