DOCUMENT();

loadMacros(
#  "PGgraphmacros.pl",
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
#  "PCCgraphMacros.pl",
  "PGcourse.pl",
  "PCCmacros.pl",
  "contextCurrency.pl",
  "parserRadioButtons.pl",
  "contextFraction.pl",
  "PGchoicemacros.pl",
);

##############################################
TEXT(beginproblem());

Context("Fraction");
Context()->noreduce('(-x)-y','(-x)+y');
Context()->variables->add(b=>"Real");

do {
$den = random(3,6,1);
do {$num=random(1,$den-1,1);} until (gcd($den,$num)==1);
$slope = -Fraction($num,$den);
$intercept = random(20,50,5);
$func = Compute("$slope*b+$intercept")->reduce;
$budget = $intercept*$den;

$maxBowls = $budget/$num;
$x1 = $den*random(1,$maxBowls/$den,1);
$y1 = $func->eval(b=>$x1);
} until ($x1 != $y1);

Context("Currency");
Context()->currency->addSymbol("dollars","dollar");
Context()->flags->set(trimTrailingZeros=>1);
Context()->operators->undefine('+','-');

$numC = Currency($num);
$denC = Currency($den);
$y1C = Currency($y1);
$x1C = Currency($x1);
$budgetC = Currency($budget);

$sex = list_random('male','female');
$pronoun = 'he' if ($sex eq 'male');
$pronoun = 'she' if ($sex eq 'female');
$object = 'him' if ($sex eq 'male');
$object = 'her' if ($sex eq 'female');
$possessive = 'his' if ($sex eq 'male');
$possessive = 'her' if ($sex eq 'female');
$name = RandomName(sex=>$sex);

@answers = (
   "If ".math_ev3($x1)." bowls are purchased, then ".math_ev3($y1)." plates will be purchased.",
   "If ".math_ev3($y1)." bowls are purchased, then ".math_ev3($x1)." plates will be purchased.",
   math_ev3($x1C)." will be used to purchase bowls, and ".math_ev3($y1C)." will be used to purchase plates.",
   math_ev3($y1C)." will be used to purchase bowls, and ".math_ev3($x1C)." will be used to purchase plates.",
);

#Create a hash and its inverse that randomizes the order of the four choices.
@scramble = NchooseK(4,4);
@inverse = ();
@answersShuffled = ();
for my $i (0..3) {
  $inverse[$scramble[$i]] = $i;
  $answersShuffled[$i] = $answers[$scramble[$i]];
}
$correctAns = $answersShuffled[$inverse{0}];

$radio = RadioButtons([[
   "If ".math_ev3($x1)." bowls are purchased, then ".math_ev3($y1)." plates will be purchased.",
   "If ".math_ev3($y1)." bowls are purchased, then ".math_ev3($x1)." plates will be purchased.",
   math_ev3($x1C)." will be used to purchase bowls, and ".math_ev3($y1C)." will be used to purchase plates.",
   math_ev3($y1C)." will be used to purchase bowls, and ".math_ev3($x1C)." will be used to purchase plates.",
]],0,
   labels => "ABC",
);

##############################################

BEGIN_PGML

[$name] will spend [`[$budgetC]`] to purchase some bowls and some plates. Each bowl costs [`[$numC]`], and each plate costs [`[$denC]`]. The function [`p(b)=[$func]`] models the number of plates [$name] will purchase, where [`b`] represents the number of bowls [$name] will purchase.

Interpret the meaning of [`p([$x1])=[$y1]`].

    [@$radio->buttons()@]*

END_PGML

ANS( $radio->cmp() );

##############################################

BEGIN_PGML_SOLUTION

For [`p(b)=[$func]`], the value of [`b`] represents the number of bowls to be purchased, and the value of [`p(b)`] represents the number of plates to be purchased.

For [`p([$x1])=[$y1]`], [`[$x1]`] implies [`[$x1]`] bowls will be purchased, while [`[$y1]`] implies [`[$y1]`] plates will be purchased. The correct solution is [$radio->correct_ans].


END_PGML_SOLUTION


ENDDOCUMENT();
