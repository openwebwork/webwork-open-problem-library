## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Algebraic Expressions')
## KEYWORDS('solve','linear','equation','integer','combine','distributive','subtract','divide','negative')
## DBCCSS('6.EE.7','7.EE.4','8.EE.7')
