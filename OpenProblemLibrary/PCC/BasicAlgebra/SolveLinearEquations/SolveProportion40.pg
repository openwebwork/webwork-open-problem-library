##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "parserAssignment.pl",
  "PCCmacros.pl",
  "answerHints.pl",
  "contextFraction.pl",
  "SolveLinearEquationPCC.pl",
  "PGcourse.pl",
);

##############################################

$var = 'x';


$a = list_random((2,4,5,8,10));

$b = random(3,9,2);
$c = random(3,9,2);

Context("Fraction");
$ans = Fraction($b*$c,$a);

@vArray = ($var);
@aArray = ($ans);
($ansEqRef, $eqTypesRef) = contextSetup(~~@vArray, ~~@aArray);


##############################################

TEXT(beginproblem());

BEGIN_PGML

Solve this proportion for [`x`]:

    [`` \frac{[$a]}{[$b]}=\frac{[$c]}{x} ``]

    [___________]

END_PGML

answerCheck($ansEqRef, $eqTypesRef);


##############################################


BEGIN_PGML_SOLUTION

    [``
\begin{aligned}
   \frac{[$a]}{[$b]} &= \frac{[$c]}{x} \\
   [$b]x\cdot\frac{[$a]}{[$b]} &= [$b]x\cdot\frac{[$c]}{x} \\
   x \cdot [$a] &= [$b] \cdot [$c] \\
   [$a]x &= [$b*$c] \\
   \frac{[$a]x}{[$a]} &= \frac{[$b*$c]}{[$a]} \\
   x &= [$ans]
\end{aligned}
``]

END_PGML_SOLUTION

ENDDOCUMENT();
