## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Algebraic Expressions')
## KEYWORDS('solve','linear','equation','formula','subtract','divide')
## DBCCSS('A-REI.3')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
