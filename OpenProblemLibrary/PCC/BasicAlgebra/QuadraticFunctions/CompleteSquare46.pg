do {
   $comB = random(1,10,1);
   $rad = -$comB**2;
   $b = non_zero_random(-10,10,2);
   $d = $b/2;
   $e = $d**2;
   $c = $e+$comB**2;
} until ($b**2-4*$c<0);

$ans = List(Formula("$var=-$d+$comB*i")->reduce,Formula("$var=-$d-$comB*i")->reduce);

$func = Compute("$var**2+$b*$var+$c")->reduce;

