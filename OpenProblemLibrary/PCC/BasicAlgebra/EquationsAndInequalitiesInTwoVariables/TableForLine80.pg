##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "pccTables.pl",
  "PGcourse.pl",
);

##############################################

Context("Numeric");

$b=random(-10,-1,1);

$y0 = -3;

$y1 = -2;

$y2 = -1;

$y3 = 0;

$y4 = 1;

$y5 = 2;

Context("Point");
Context()->parens->set("[" => {type => "Interval", close => "]"});
Context()->parens->set("{" => {type => "Set", close => "}"});
Context()->parens->set("<" => {type => "Vector", close => ">"});
$ans02 = Compute("($b,$y0)");
$ans12 = Compute("($b,$y1)");
$ans22 = Compute("($b,$y2)");
$ans32 = Compute("($b,$y3)");
$ans42 = Compute("($b,$y4)");
$ans52 = Compute("($b,$y5)");

Context("LimitedNumeric");
$b = Compute($b);

##############################################

TEXT(beginproblem());

Context()->texStrings;

BEGIN_TEXT

$PAR
Fill out this table for the equation \( x=$b \). The first row is an example.
$PAR

\{ 
DataTable([[{data=>"\(x\)",header=>"CH"},{data=>"\(y\)",header=>"CH"},{data=>"Points",header=>"CH"},],
["\($b\)","\($y0\)","\($ans02\)"],
[ans_rule(3),"\($y1\)", ans_rule(6)],
[ans_rule(3),"\($y2\)", ans_rule(6)],
[ans_rule(3),"\($y3\)", ans_rule(6)],
[ans_rule(3),"\($y4\)", ans_rule(6)],
[ans_rule(3),"\($y5\)", ans_rule(6)],
], allcellcss=>"border:1px solid;padding:4pt;text-align:center;", caption => "Values of \(x\) and \(y\) satisfying the equation \(x=$b\)", captioncss =>"padding:4pt; text-decoration:none;");
\}  


$PAR

END_TEXT

Context()->normalStrings;

##############################################

$showPartialCorrectAnswers=1;
ANS( $b -> cmp);
ANS( $ans12 -> cmp);
ANS( $b -> cmp);
ANS( $ans22 -> cmp);
ANS( $b -> cmp);
ANS( $ans32 -> cmp);
ANS( $b -> cmp);
ANS( $ans42 -> cmp);
ANS( $b -> cmp);
ANS( $ans52 -> cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));

\{ 
DataTable([[{data=>"\(x\)",header=>"CH"},{data=>"\(y\)",header=>"CH"},{data=>"Points",header=>"CH"},],
["\($b\)","\($y1\)", "\($ans12\)"],
["\($b\)","\($y2\)", "\($ans22\)"],
["\($b\)","\($y3\)", "\($ans32\)"],
["\($b\)","\($y4\)", "\($ans42\)"],
["\($b\)","\($y5\)", "\($ans52\)"],
], allcellcss=>"border:1px solid;padding:4pt;text-align:center; width:60pt;", caption => "Values of \(x\) and \(y\) satisfying the equation \( x=$b \)", captioncss =>"padding:4pt; text-decoration:none;");
\}  


END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();


