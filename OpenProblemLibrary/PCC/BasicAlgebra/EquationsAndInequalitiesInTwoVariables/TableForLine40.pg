## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Coordinate Geometry')
## KEYWORDS('coordinates','linear equation')
## DBCCSS('8.F.1')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')
## Author('Alex Jordan, Carl Yao, Chris Hughes')
## Institution('PCC')

##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "pccTables.pl",
  "PGcourse.pl",
);

##############################################

Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');

$b=random(1,10,1);
$func = Compute("-x+$b")->reduce;

$x0 = -3;
$ans01 = $func->eval(x=>$x0);

$x1 = -2;
$ans11 = $func->eval(x=>$x1);

$x2 = -1;
$ans21 = $func->eval(x=>$x2);

$x3 = 0;
$ans31 = $func->eval(x=>$x3);

$x4 = 1;
$ans41 = $func->eval(x=>$x4);

$x5 = 2;
$ans51 = $func->eval(x=>$x5);

Context("Point");
Context()->parens->set("[" => {type => "Interval", close => "]"});
Context()->parens->set("{" => {type => "Set", close => "}"});
Context()->parens->set("<" => {type => "Vector", close => ">"});
$ans02 = Compute("($x0,$ans01)");
$ans12 = Compute("($x1,$ans11)");
$ans22 = Compute("($x2,$ans21)");
$ans32 = Compute("($x3,$ans31)");
$ans42 = Compute("($x4,$ans41)");
$ans52 = Compute("($x5,$ans51)");

Context("LimitedNumeric");
$ans11 = Compute($ans11);
$ans21 = Compute($ans21);
$ans31 = Compute($ans31);
$ans41 = Compute($ans41);
$ans51 = Compute($ans51);

##############################################

TEXT(beginproblem());

Context()->texStrings;

BEGIN_TEXT

$PAR
Make a table for the equation.
$PAR
The first row is an example.
$PAR

\{ 
DataTable([[{data=>"\(x\)",header=>"CH"},{data=>"\(y=$func\)",header=>"CH"},{data=>"Points",header=>"CH"},],
 ["\($x0\)","\($ans01\)", "\($ans02\)"],
["\($x1\)",ans_rule(3), ans_rule(6)],
["\($x2\)",ans_rule(3), ans_rule(6)],
["\($x3\)",ans_rule(3), ans_rule(6)],
["\($x4\)",ans_rule(3), ans_rule(6)],
["\($x5\)",ans_rule(3), ans_rule(6)],
], allcellcss=>"border:1px solid;padding:4pt;text-align:center;", caption => "Values of \(x\) and \(y\) satisfying the equation \( y=$func \)", captioncss =>"padding:4pt; text-decoration:none;");
\}  


$PAR

END_TEXT

Context()->normalStrings;

##############################################



$showPartialCorrectAnswers=1;
ANS( $ans11 -> cmp);
ANS( $ans12 -> cmp);
ANS( $ans21 -> cmp);
ANS( $ans22 -> cmp);
ANS( $ans31 -> cmp);
ANS( $ans32 -> cmp);
ANS( $ans41 -> cmp);
ANS( $ans42 -> cmp);
ANS( $ans51 -> cmp);
ANS( $ans52 -> cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));

\{ 
DataTable([[{data=>"\(x\)",header=>"CH"},{data=>"\(y\)",header=>"CH"},{data=>"Points",header=>"CH"},],
["\($x1\)","\(y= - ($x1) +$b = $ans11\)", "\($ans12\)"],
["\($x2\)","\(y= - ($x2) +$b = $ans21\)", "\($ans22\)"],
["\($x3\)","\(y= - ($x3) +$b = $ans31\)", "\($ans32\)"],
["\($x4\)","\(y= - ($x4) +$b = $ans41\)", "\($ans42\)"],
["\($x5\)","\(y= - ($x5) +$b = $ans51\)", "\($ans52\)"],
], allcellcss=>"border:1px solid;padding:4pt;text-align:center; width:60pt;", caption => "Values of \(x\) and \(y\) satisfying the equation \( y=$func \)", captioncss =>"padding:4pt; text-decoration:none;");
\}  


END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();


