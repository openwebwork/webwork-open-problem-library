DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "niceTables.pl",
  "parserPopUp.pl",
  "PGcourse.pl",
);
sub PF {PGML::Format(@_)};

##############################################

TEXT(beginproblem());
Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');

$startX = random(-4,0,1);
$rate = non_zero_random(1,4,1);
$startY = random(-10,10,1);
$function = Compute("$rate*x+$startY")->reduce;

@xValues = ( );
@yValues = ( );
@xIncrease = ( );
@yIncrease = ( );
@yIncreaseAbs = ( );
@yMessage = ( );

$xValues[0] = $startX;
$yValues[0] = $function->eval(x=>$xValues[0]);

for (my $i=1;$i<=4;$i++) {
   $xValues[$i] = $xValues[$i-1]+1;
   $yValues[$i] = $function->eval(x=>$xValues[$i]);
   $xIncrease[$i] = $xValues[$i]-$xValues[$i-1];
   $yIncrease[$i] = $yValues[$i]-$yValues[$i-1];
   $yIncreaseAbs[$i] = abs($yIncrease[$i]);
   $yMessage[$i] = ($yIncrease[$i]>0) ? " increases " : " decreases ";
}

$ans = $function;


##############################################

BEGIN_PGML

Write a linear equation which fits data in the table.

[@DataTable(
  [
    [[PF('[`x`]-values'),
      cellcss => 'border-bottom: 3px solid; ',],
     [PF('[`y`]-values'),
      cellcss => 'border-bottom: 3px solid; ',],
    ],
    [[PF('[`[$xValues[0]]`]'),],
     [PF('[`[$yValues[0]]`]'),],
    ],
    [[PF('[`[$xValues[1]]`]'),],
     [PF('[`[$yValues[1]]`]'),],
    ],
    [[PF('[`[$xValues[2]]`]'),],
     [PF('[`[$yValues[2]]`]'),],
    ],
    [[PF('[`[$xValues[3]]`]'),],
     [PF('[`[$yValues[3]]`]'),],
    ],
    [[PF('[`[$xValues[4]]`]'),],
     [PF('[`[$yValues[4]]`]'),],
    ],
  ],
  align => 'c c',
  columnscss =>
    ['border-right: 0px solid; ',
     ' ',
     ' ',],
);@]*

The linear equation is [`y=`][__________]{$ans}.

END_PGML



