##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");

@triples = ([3,4,5],[6,8,10],[9,12,15],[5,12,13],[7,24,25]);
$i = random(0,4,1);
$ans = $triples[$i][2];
$j = random(0,1,1);
$k = ($j==1) ? 0 : 1;
$a = $triples[$i][$j];
$b = $triples[$i][$k];

$a2 = $a*$a;
$b2 = $b*$b;
$ans2 = $ans*$ans;


##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate the following.

    [`` \sqrt{[$a]^2+[$b]^2}= ``][________]{$ans}  

END_PGML

##############################################

BEGIN_PGML_SOLUTION

    [``
\begin{aligned}[t] 
   \sqrt{[$a]^2+[$b]^2} & = \sqrt{[$a2]+[$b2]} \\
   & = \sqrt{[$ans2]} \\
   & = [$ans]
\end{aligned}
    ``]

Note that we may *not* do this:

    [``
\begin{aligned}[t] 
   \sqrt{[$a]^2+[$b]^2} & = \sqrt{[$a]^2}+\sqrt{[$b]^2} \\
   & = [$a] + [$b] \\
   & = [$a+$b]
\end{aligned}
    ``]

END_PGML_SOLUTION

ENDDOCUMENT();


