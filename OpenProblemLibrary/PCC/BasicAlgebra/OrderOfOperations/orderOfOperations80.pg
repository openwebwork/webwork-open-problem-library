## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Algebraic Expressions')
## KEYWORDS('integer','order of operations','add','evaluate','integer exponents')
## DBCCSS('6.EE.1')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')
## Author('Alex Jordan, Carl Yao, Chris Hughes')
## Institution('PCC')

##############################################


DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "answerHints.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");

$a=random(1,10,1);
$b=random(2,7,1);

$ans1=Compute((-$a)**2+$b);
$ans2=Compute(-($a**2)+$b);

##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate these expressions:

a)    [`` (-[$a])^{2}+[$b] =  ``]  [________]

b)    [`` -[$a]^{2}+[$b]=  ``]  [________]

END_PGML

##############################################

$pro1Step1 = (-$a)**2;
$pro2Step1 = -$a**2;

$wrong=-($a**2)+$b;
ANS($ans1 -> cmp() ->
  withPostFilter(AnswerHints(
    [Compute("$wrong")] =>
    "Notice that the negative symbol is also being squared in this calculation.")));

ANS($ans2 -> cmp());
BEGIN_PGML_SOLUTION

Note the difference between

    [`
          \begin{aligned} 
               (-[$a])^{2}& =(-[$a])\cdot(-[$a])\\
                           &=[$pro1Step1] 
           \end{aligned}
    `]

and

    [`
         \begin{aligned}
            -[$a]^{2} & =-[$a]\cdot[$a]\\
                       &=[$pro2Step1] 
          \end{aligned}
    `]

### Solutions

a)    [`
         \begin{aligned}[t]
           (-[$a])^{2}+[$b]  & = [$pro1Step1] + [$b] \\ 
                           & = [$ans1] 
          \end{aligned}
    `]  
----
b)   [`
          \begin{aligned}[t]
          -[$a]^{2} + [$b]  & = [$pro2Step1] +[$b] \\
                       & = [$ans2] 
       \end{aligned}
      `]

END_PGML_SOLUTION

ENDDOCUMENT();


