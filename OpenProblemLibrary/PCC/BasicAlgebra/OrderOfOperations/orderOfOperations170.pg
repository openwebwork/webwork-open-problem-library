##############################################



DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "contextFraction.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedFraction");
Context()->flags->set(showMixedNumbers=>0,requirePureFractions=>1,requireProperFractions=>1);


$a=random(6,10,1);
$b=random(2,5,1);
$c=random(1,7,2);
$d=$a+$b-$c;

$ans=Fraction($a**2-$b**2,$c+$d);

##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate the following.

    [`` \frac{[$a]^{2}-[$b]^{2}}{[$c]+[$d]} =  ``]  [________]{$ans->cmp(cmp_class=>'number')} 

END_PGML

##############################################

$step1 = $a**2;
$step2 = $b**2;
$step3 = $step1-$step2;
$step4 = $c+$d;




BEGIN_PGML_SOLUTION

    [`
\begin{aligned} 
\frac{[$a]^{2}-[$b]^{2}}{[$c]+[$d]} & = \frac{[$step1]-[$b]^{2}}{[$c]+[$d]}  \\
& = \frac{[$step1]-[$step2]}{[$c]+[$d]}  \\
& = \frac{[$step3]}{[$step4]}  \\
& =[$ans] 
\end{aligned}`]

END_PGML_SOLUTION

ENDDOCUMENT();


