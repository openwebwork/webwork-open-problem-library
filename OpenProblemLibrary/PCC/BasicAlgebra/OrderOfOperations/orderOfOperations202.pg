##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");

$a = random(1,5,1);
$b= random($a+1,9,1);
$c = random(1,5,1);
$d = random($c+1,9,1);
$e = random(1,9,1);
$ans = $a-$b*abs($c-$d)+$e;

##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate the following.

    [`` [$a]-[$b]\left\lvert [$c]-[$d] \right\rvert + [$e] =  ``]  [________]{$ans}

END_PGML

##############################################

$s1 = $b*($d-$c);

BEGIN_PGML_SOLUTION

    [`
\begin{aligned} 
   [$a]-[$b]\left\lvert [$c]-[$d] \right\rvert + [$e] 
& =  [$a]-[$b]\left\lvert [$c-$d] \right\rvert + [$e]  \\
& =  [$a]-[$b]\cdot [$d-$c] + [$e]  \\
& =  [$a]-[$s1] + [$e]  \\
& =  [$a-$s1] + [$e]  \\
& = [$ans] 
\end{aligned}
`]

END_PGML_SOLUTION

ENDDOCUMENT();


