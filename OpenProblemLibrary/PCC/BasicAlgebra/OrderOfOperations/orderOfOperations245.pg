##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");

do {
$den = random(2,9,1)*random(-1,1,2);
$ans = non_zero_random(-10,10,1);
$num = $den*$ans;

@factors = (1);
for (my $i=2;$i<sqrt(abs($num))+1;$i++) {
   if (abs($num)%$i==0) {push @factors,$i;}
}
$a = $factors[random(0,$#factors,1)];
} until ($a != 1);

if ($num<0) {$a=-$a;}

$numB = $num/$a;
$b = random(1,$numB-1,1);
$c = $numB+$b;

$e = random(-5,-1,1);
$e2 = $e*$e;
$d = $den+$e2;

##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate the following.

    [`` \frac{[$a]\left\lvert [$b]-[$c] \right\rvert}{[$d]-([$e])^2} =  ``]  [________]{$ans}

END_PGML

##############################################

BEGIN_PGML_SOLUTION

    [`
\begin{aligned}
\frac{[$a]\left\lvert [$b]-[$c] \right\rvert}{[$d]-([$e])^2} & = \frac{[$a]\left\lvert [$b-$c] \right\rvert}{[$d]-[$e2]} \\
& = \frac{[$a]\cdot[$c-$b]}{[$den]}  \\
& = \frac {[$num]} {[$den]}  \\
& = [$ans] 
\end{aligned}`]

END_PGML_SOLUTION

ENDDOCUMENT();


