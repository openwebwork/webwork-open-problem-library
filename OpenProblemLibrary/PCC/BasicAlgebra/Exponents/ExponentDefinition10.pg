## Author('Alex Jordan, Carl Yao, Chris Hughes')
## Institution('PCC')

##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");

$a = random(2,5,1);
$b = random(2,5,1);
while ($b==$a) {$b = random(2,5,1);}
$c = random(-5,-2,1);
$d = random(-5,-2,1);
while ($d==$c) {$d = random(-5,-2,1);}

$ans1 = Compute(($a)**2);
$ans2 = Compute(($b)**3);
$ans3 = Compute(($c)**2);
$ans4 = Compute(($d)**3);


##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate the following.
a. [` [$a]^{2} `]  
   [________]{$ans1}

a. [` [$b]^{3} `]  
   [________]{$ans2}

a. [` ([$c])^{2} `]  
   [________]{$ans3}

a. [` ([$d])^{3} `]  
   [________]{$ans4}


END_PGML

##############################################

BEGIN_PGML_SOLUTION

The solutions are:

a)    [` 
         \begin{aligned}[t]
             [$a]^{2}&=[$a]\cdot[$a]\\
                     &=[$ans1]  
          \end{aligned}`]

b)    [`
          \begin{aligned}[t]
              [$b]^{3}&=[$b]\cdot[$b]\cdot[$b]\\
                      &=[$ans2]
           \end{aligned}`]

c)    [`
          \begin{aligned}[t] 
                 ([$c])^{2}&=([$c])\cdot([$c])\\
                        &=[$ans3]
            \end{aligned}`]

d)    [`
          \begin{aligned}[t]
               ([$d])^{3}&=([$d])\cdot([$d])\cdot([$d])\\
                         &=[$ans4]
           \end{aligned}`]


END_PGML_SOLUTION

ENDDOCUMENT();

