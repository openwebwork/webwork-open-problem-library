#
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Polynomial and Rational Functions')
## DBsection('Polynomial Functions')
## KEYWORDS('multiply','exponent','simplify')
## DBCCSS('8.EE.1')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')
## Author('Alex Jordan, Carl Yao, Chris Hughes')
## Institution('PCC')

##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PCCmacros.pl",
  "contextLimitedPolynomial.pl",
  "answerHints.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedPolynomial-Strict");

# m and n are the exponents
$m=random(2,12,1);
$n=random(2,12,1);

# myvar is the variable- could be x, y, z, ..., anything in PCCmacros.pl
$myvar = RandomVariableName(type=>'variable');
Context()->variables->are($myvar=>'Real');

# custom error message
Context()->{error}{msg}{"A variable can appear only once in each term of a polynomial"}
  = "Your answer must be fully simplified";

# compute the answer
$total = $m*$n;
$ans = Formula("$myvar^($total)");


##############################################
TEXT(beginproblem());

BEGIN_PGML
Use the properties of exponents to simplify the expression. 

    [``\left([$myvar]^{[$m]}\right)^{[$n]}``]

    [____________]

END_PGML

$wrong=$m+$n;
ANS($ans -> cmp() ->
  withPostFilter(AnswerHints(
    [Compute("$myvar^($wrong)")] =>
    "When raising terms to a power, you do not add the exponents.")));

BEGIN_PGML_SOLUTION
We _multiply_ the exponents as follows: [```\begin{aligned}
           \left([$myvar]^{[$m]}\right)^{[$n]}&=[$myvar]^{[$m]\cdot[$n]}\\
                             &=[$myvar]^{[$total]}
       \end{aligned}```]

END_PGML_SOLUTION
##############################################

ENDDOCUMENT();
