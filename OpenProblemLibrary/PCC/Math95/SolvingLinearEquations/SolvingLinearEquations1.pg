##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",  
  "contextFraction.pl",
  "PGunion.pl",
);

TEXT(beginproblem());

##############################################

Context("Fraction");

$a = non_zero_random(-10,10,1);
$b = non_zero_random(-10,10,1);
$c = non_zero_random(-10,10,1);

$left = Formula("$a x+$b")->reduce;
$right = Formula("$c")->reduce;


$ans = Fraction("$c-$b","$a");

Context("LimitedFraction");
Context()->flags->set(showMixedNumbers=>0);
$ans = Fraction($ans);

##############################################



Context()->texStrings;

BEGIN_TEXT

Use algebra to solve the equation \[$left=$right\]

$BBLOCKQUOTE
The solution is \(x = \)$SPACE \{ans_rule(10)\}. $PAR
The solution set is \{ans_rule(10)\}.$BR
(Use set notation.)
$EBLOCKQUOTE

END_TEXT

Context()->normalStrings;

##############################################

ANS( $ans->cmp());
Context("Interval");
Context()->parens->set('{'=>{type=>'Set'});
ANS( Compute("{$ans}")->cmp(tolerance=>0));






ENDDOCUMENT();
