DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PCCmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a = random(1,5,1);
$b = random(2,7,1);
$num1 = random(1,4,1);
$num2 = random(-5,-1,1);


######################################

#  Main text


BEGIN_PGML
For \( f(x) = |$a - $b x| \), Find:

a) \( f($num1) = \)  \{ ans_rule(15) \} 

b) \( f($num2) = \)  \{ ans_rule(15) \} 
END_PGML


######################################

#  Answer


Context()->strings->add("No solution"=>{});


$ans_a = Real(abs($a - $b * $num1));
ANS($ans_a->cmp); 

$ans_b = Real(abs($a - $b * $num2));
ANS($ans_b->cmp); 

$showPartialCorrectAnswers = 1;

######################################


;
