# ENDDESCRIPTION

## DBCCSS('6.EE.1','6.NS.7')
## DBsubject(Arithmetic)
## DBchapter(Integers)
## DBsection(Multiple operations)
## Institution(PCC)
## Author(Carl Yao)
## Level(2)
## MO(1)
## KEYWORDS('integer','order of operations','subtract','divide','evaluate','absolute value')

##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl"
);

##############################################

Context("LimitedNumeric");

$a=list_random((1,27));
$b=list_random((2,4));
$c= -abs($a**(1/3)-$b);

$ans= Compute(abs(($a+(-$b)**3)/$c));


##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate this expression:

    [`` \left| \frac{[$a]+(-[$b])^{3}}{[$c]} \right| =  ``]  [________]{$ans}

END_PGML

##############################################

$step1 = $b**3;
$step2 = $a-$step1;
$step3 = $step2/$c;

BEGIN_PGML_SOLUTION

    [`
\begin{aligned}
\left| \frac{[$a]+(-[$b])^{3}}{[$c]} \right| & = \left| \frac{[$a]+(-[$step1])}{[$c]} \right| \\
& = \left| \frac{[$step2]}{[$c]} \right| \\
& = \left| [$step3] \right| \\
& = [$ans] 
\end{aligned}`]

END_PGML_SOLUTION

ENDDOCUMENT();


