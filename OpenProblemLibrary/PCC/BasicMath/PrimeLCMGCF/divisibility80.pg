TEXT(beginproblem());

Context("Numeric");

@factors = (2, 3, 5, 9, 10);
@given = ();

#Create the number. Make sure at least 2 factors go into the number.
do {
   $flag = 0;
   $num = random(100,900,100)+random(10,90,10)+random(1,9,1);
   foreach my $item (@factors) {
      if ($num%$item==0) {$flag++;}
   }
} until ($flag>=2);

@canGoInto = ();

$mc = new_checkbox_multiple_choice();

Context()->texStrings;
$i=0;
foreach my $item (@factors) {
   if ($num%$item==0) {
      $canGoInto[$i++]="does";
      $mc -> qa (
      "Mark all numbers which divide into $num.$BR",
      "\($item\)$BR",
      );
   } else {
      $canGoInto[$i++]="does not";
   }
}

$mc->makeLast(
   "\($factors[0]\)$BR",
   "\($factors[1]\)$BR",
   "\($factors[2]\)$BR",
   "\($factors[3]\)$BR",
   "\($factors[4]\)$BR"
);
