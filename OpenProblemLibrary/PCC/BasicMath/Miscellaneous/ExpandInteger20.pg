##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("Numeric");
Context()->operators->redefine('+',using=>',',from=>'Numeric');
Context()->operators->set('+'=>{string=>' + ',TeX=>'+'});
Context()->lists->set(List => {separator => "+"});
Context()->operators->undefine(',');

@digits = ( );
@answers = ( );

$num = 0;
for my $i (0..4) {
   $digits[$i] = random(1,9,1);
   $answers[$i] = $digits[$i]*10**$i;
   $num += $answers[$i];
}

$ans = List($answers[4]);
for ($i=3;$i>=0;$i--) {
   if ($digits[$i]!=0) {
      $tempList = List($answers[$i]);
      $ans = $ans + $tempList;
   }
}

##############################################

TEXT(beginproblem());

BEGIN_PGML

A number's expanded form is [`[$ans]`]. Write this number's value.

    [``[$ans]=``][_________]{$num}

END_PGML

##############################################

BEGIN_PGML_SOLUTION

The number's value is:

    [`` [$ans]=[$num] ``]

END_PGML_SOLUTION

ENDDOCUMENT();

