##############################################


DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");
#Context()->{format}{number} = "%9d";

$numZeroes = 1;
$power = 10**$numZeroes;

$dec = random(1,9,1)+random(0,9,1)/10+random(1,9,1)/100;
$ans1 = $dec*$power;
$ans2 = $ans1*10;
$ans3 = $ans2*10;

##############################################

TEXT(beginproblem());

BEGIN_PGML

Calculate without using a calculator. Don't use commas in your answer.

a.    [`[$dec] \cdot [$power] `] = [___________]{$ans1}

a.    [`[$dec] \cdot [$power*10] `] = [___________]{$ans2}

a.    [`[$dec] \cdot [$power*100] `] = [___________]{$ans3}

END_PGML

##############################################

if ($numZeroes==1) {$times = "once";}
elsif ($numZeroes==2) {$times = "twice";}
else {$times = "$numZeroes".' times';}

###########################################

BEGIN_PGML_SOLUTION

a.    [``[$dec] \cdot [$power] =[$ans1]``] as we move the decimal point to the right [$times].

a.    [``[$dec] \cdot [$power*10] =[$ans2]``] as we move the decimal point to the right [$numZeroes+1] times.

a.    [``[$dec] \cdot [$power*100] =[$ans3]``] as we move the decimal point to the right [$numZeroes+2] times.

END_PGML_SOLUTION

ENDDOCUMENT();


