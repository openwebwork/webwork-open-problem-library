# WeBWorK problem written by Carl Yao
# Portland Community College
#
# Given a decimal, choose the correct way to read it.
# Decimals are like 6.20.
# 
# Last updated: Yao, 10/19/2013
#
# ENDDESCRIPTION

## DBCCSS('4.NF')

## DBsubject(Arithmetic)
## DBchapter(Decimals)
## DBsection(Converting between fractions and decimals)
## Institution(PCC)
## Author(Carl Yao)
## MLT(basicConvertingFromDecimalToMixed)
## Level(1)
## KEYWORDS('decimal')



##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PCCmacros.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

##############################################

Context("LimitedNumeric");

$int=random(1,9,1);
$intWord = numberWord($int);

$hundredth = 0;
$tenth = random(1,9,1);

$num = sprintf("%.2f",$int+$tenth/10);
$num1 = sprintf("%.1f",$int+$tenth/10);

#$word[0] and $word[1] are correct answers. The others are decoys.
@word=();

$word[0] =  $intWord.' and '.numberWord($tenth).' tenth';
if ($tenth!=1) {$word[0] .= 's';}

$word[1] =  $intWord.' and '.numberWord($tenth*10).' hundredths';

$word[2] = $word[0];
$word[2] =~ s/tenth/hundredth/;

$word[3] = $word[1];
$word[3] =~ s/hundredth/tenth/;

Context()->texStrings;
$mc = new_checkbox_multiple_choice();

$mc -> qa (
"Choose all correct ways to read \($num\)$BR",
"$word[0] $BR",
"$word[1] $BR",
);

$mc -> extra( 
"$word[2] $BR",
"$word[3] $BR",
);

Context()->normalStrings;

TEXT(beginproblem());

##############################################

BEGIN_TEXT

\{ $mc -> print_q() \}

$SPACE $SPACE $SPACE    \{ $mc -> print_a() \}

END_TEXT

##############################################
install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );

##############################################

BEGIN_PGML_SOLUTION

Since trailing zeroes in a decimal can be ignored, we have [`[$num]=[$num1]`].

The correct way to read [`[$num]`] is [@$word[1]@].

The correct way to read [`[$num1]`] is [@$word[0]@].

So the correct answers are [@$mc->correct_ans()@].

END_PGML_SOLUTION



ENDDOCUMENT();
