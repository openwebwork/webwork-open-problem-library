Context("LimitedNumeric");

$fout = (1,2,3,4,5,6,7);
$gout = (1,2,3,4,5,6,7);


sub shufflemap {
    my $n = shift();
    my $m = $n - 1;
    my $zeroind;

    my %map = ();
 
    my @vals = (0..$m);
    for ( my $i=0; $i<$m; $i++ ) {
  my $j = random(0,$m-$i,1);
  $map{$i} = $vals[$j];
  $zeroind = $i if ( $map{$i} == 0 );
  splice(@vals, $j, 1);
    }
    $map{$m} = $vals[0];
    $zeroind = $m if ( $map{$m} == 0 );
 
    return( { %map }, $zeroind );
}

($fout, $fzero) = shufflemap(7);   #A random permutation function.  
                                      #$zero is $shuffle(0), the index
                                      #of the correct graph

($gout, $gzero) = shufflemap(7);   #A random permutation function.  
                                      #$zero is $shuffle(0), the index
                                      #of the correct graph



$answer1 = random(0,6,1);
$fout1 = $fout->{$answer1};

$gout2 = $gout->{0};

$gout3 = $gout->{$fzero};

$b = random(1,6,1);

