$s = $gout->{0};

BEGIN_PGML_SOLUTION

a) [`\begin{aligned}[t]
f^{-1}([$fout1]) &= [$answer1]
\end{aligned}`]

a) [`\begin{aligned}[t]
f^{-1}\left(g^{-1}([$gout2])\right) &= f^{-1}(0)\\
&= [$fzero]
\end{aligned}`]

a) [`\begin{aligned}[t]
f\left(g^{-1}([$gout3])\right) &= f([$fzero])\\
&= 0
\end{aligned}`]

a) [`\begin{aligned}[t]
g\left(g^{-1}([$b])\right) &= [$b]
\end{aligned}`]

END_PGML_SOLUTION


