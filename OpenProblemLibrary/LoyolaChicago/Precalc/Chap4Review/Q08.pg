DOCUMENT();

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl",
           "PGcourse.pl",
);

TEXT(beginproblem());

Context("Numeric");


$showPartialCorrectAnswers = 1;

$Q = random(11,39,1);
$k = random(0.08,0.24,.01);
$ans = "ln($Q)/$k";

Context()->texStrings;
BEGIN_TEXT

Use logarithms to find an exact solution to the equation below.
$PAR
\( e^{$k t} = $Q \)
$PAR
\( t = \) \{ ans_rule(20) \}

END_TEXT
Context()->normalStrings;

# ANS(num_cmp($ans,tol=>0.000000000001) );

ANS( Compute($ans)->cmp( tolerance=>0 ) );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
Using the log rules, we have
\[\begin{aligned}
e^{$k t} &= $Q \\
\ln{ \left( e^{$k t} \right)} &= \ln{($Q)} \\
$k t &= \ln{($Q)} \\
t &= \frac{\ln{($Q)}}{$k}
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
