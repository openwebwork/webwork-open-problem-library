####################################
#  Initialization

DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
#"PGauxiliaryFunctions.pl",# defines only log to be the natural log (ln is undefined)
"MathObjects.pl",# defines both log and ln to be natural log
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");

$a = random(-4,-1,1);

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Rewrite the logarithmic equation \( \ln (x) = $a \)
in equivalent exponential form.  There may be more
than one correct answer.",
"\( x = e^{$a} \) $BR",
);
$mc -> extra(
"\( x = 10^{$a} \) $BR",
"\( e^{x} = $a \) $BR",
"\( x = \ln($a) \) $BR",
);
$mc -> makeLast("None of the above");


####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT

\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}

END_TEXT
Context()->normalStrings;


###################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp( $mc->correct_ans() ) );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
The equation \( \ln(x) = $a \) is equivalient to \( x = e^{$a} \).

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
