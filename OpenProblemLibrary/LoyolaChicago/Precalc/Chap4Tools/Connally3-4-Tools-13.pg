####################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");

$b = random(3,7,1);
$a = sprintf("%0.3f", ln($b)/ln(10) );
#$a1 = $a + random(0.1,0.2,0.01);

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Rewrite the exponential equation \( 10^{$a} \approx  $b \)
in equivalent logarithmic form.  There may be more
than one correct answer.",
"\( $a \approx \log($b) \) $BR",
);
$mc -> extra(
"\( $a \approx \ln($b) \) $BR",
"\( 10 \approx \log($b) \)$BR",
"\( $b = \log($a) \) $BR",
);
$mc -> makeLast("None of the above");


####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT

\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}

END_TEXT
Context()->normalStrings;


###################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp( $mc->correct_ans() ) );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
Taking the logarithm base ten of both sides, we have
\( \log(10^{$a}) \approx \log($b) \), or
\( $a \approx \log($b) \).

END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
