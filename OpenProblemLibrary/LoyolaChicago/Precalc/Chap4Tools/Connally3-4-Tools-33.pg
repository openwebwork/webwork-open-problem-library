DOCUMENT();  

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextLimitedPolynomial.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("LimitedPolynomial-Strict");
#Context("Numeric");
#Context()->variables->are(x=>"Real");
#Context()->variables->set(x=>{limits=>[2,3]});


$a = random(2,8,2);
$b = random(3,9,2);
$c = random(2,9,1);
$d = random(2,9,1);
$apb = $a + $b;
$cpd = $c*$d;

$expression = "\ln \left( $c x^{$a} \right) + \ln \left( $d x^{$b} \right)";
$logtype = "\ln";

$answer = Compute("$cpd * x^$apb");


####################################
#  Main Text

BEGIN_TEXT

Using laws of logarithms, write the expression 
below as a single logarithm.
$BR
$BR
\( $expression = $logtype \big( \)
\{ ans_rule(10) \}
\( \big) \)
\{ AnswerFormatHelp("formula") \}


END_TEXT


###################################
#  Answer evaluation

ANS($answer->cmp() );


