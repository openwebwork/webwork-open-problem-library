####################################
#  Initialization

DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
#"PGauxiliaryFunctions.pl",# defines only log to be the natural log (ln is undefined)
"MathObjects.pl",# defines both log and ln to be natural log
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");

$a = random(3,7,1);
$aa = $a * $a;

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Rewrite the logarithmic equation \( \ln ($aa) = x^2 \)
in equivalent exponential form.  There may be more
than one correct answer.",
"\( $aa = e^{x^2} \) $BR",
);
$mc -> extra(
"\( x = $a \) $BR",
"\( $aa = 10^{x^2} \) $BR",
"\( $a = e^{x} \) $BR",
);
$mc -> makeLast("None of the above");


####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT

\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}

END_TEXT
Context()->normalStrings;


###################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(checkbox_cmp( $mc->correct_ans() ) );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
The equation \( \ln($aa) = x^2 \) is equivalient to \( $aa = e^{x^2} \).

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
