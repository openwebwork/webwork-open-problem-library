####################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");
Context()->variables->are(x=>"Real");
Context()->variables->set(x=>{limits=>[2,3]});


$a = random(2,8,2);
$b = random(3,9,2);

$expression = "\ln x^{$a} - \ln \left( x + $b \right)";
$logtype = "\ln";

$answer = Compute("x^$a / (x + $b)");


####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT

Using laws of logarithms, write the expression
below as a single logarithm.
$PAR
\( $expression = $logtype \big( \)
\{ ans_rule(10) \}
\( \big) \)
\{ AnswerFormatHelp("formula") \}


END_TEXT
Context()->normalStrings;


###################################
#  Answer evaluation

ANS($answer->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
Using the property of a logarithm of a quotient we have
\[ $expression = \ln\left($answer\right). \]

END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
