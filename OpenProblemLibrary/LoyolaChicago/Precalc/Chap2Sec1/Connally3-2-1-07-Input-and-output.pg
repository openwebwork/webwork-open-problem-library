##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
Context()->variables->add(t=>"Real");
Context()->flags->set(tolerance=>0, tolType=>"absolute");

$a = random(2,3,4);
$b = $a - 1;

$f = Formula("$a*x+$b");

$yint = Real("$b");

$roots = List(Real("-$b/$a"));

Context()->operators->undefine("+","-","*","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose \( f(x) = $f \).
$PAR
(a) Find, simplifying your answer as possible: \( f(0) = \)
\{ans_rule(20)\}
\{ AnswerFormatHelp("Number") \}
$PAR
(b) Solve \( f(x) = 0  \), simplifying your answer as possible:
$BR
\( x = \) \{ans_rule(20)\}
\{ AnswerFormatHelp("Number") \}

END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($yint->cmp());
ANS($roots->cmp());

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
(a) \(f(0) = $a(0) + $b = $b\).
$PAR
(b) We have \(f(x) = $a x + $b = 0\), so
\(x = -\frac{$b}{$a}\).

END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
