##############################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
Context()->variables->add(t=>"Real");
Context()->flags->set(tolerance=>0, tolType=>"absolute");

$a = random(2,4,1);
$b = $a + 1;
$apb = $a + $b;
$ab = $a * $b;

$g = Formula("t**2 - $apb * t + $ab");

$yint = Real("$ab");

$roots = List(Real("$a"),Real("$b"));

Context()->operators->undefine("+","-","*","/","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose \( g(t) = $g \).
$PAR
(a) Find, simplifying your answer as possible:
\( g(0) = \)
\{ans_rule(20)\}
\{ AnswerFormatHelp("Number") \}
$PAR
(b) Solve \( g(t) = 0  \), simplifying your answer as possible:
$BR
\( t = \) \{ans_rule(20)\}
\{ AnswerFormatHelp("Number") \}

END_TEXT
Context()->normalStrings;

#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($yint->cmp());
ANS($roots->cmp());

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
(a) \(g(0) = (0)^2 - $apb(0) + $ab = $ab \).
$PAR
(b) We have \(g(t) = t^2 - $apb t + $ab = 0\).  Factoring
gives \((t - $a)(t - $b) = 0\), so \(t = $a, $b\).

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
