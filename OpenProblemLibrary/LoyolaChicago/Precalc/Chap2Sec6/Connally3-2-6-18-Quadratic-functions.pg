##################################
#  Initialization

DOCUMENT();       

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

#######################################
#  Setup
       
TEXT(beginproblem()); 

Context("Numeric");

$a = random(1,4,1);
$b = $a + 1;
$c = $a + 2;

# ($a x - $b)($b x - $c)
$p2 = $a * $b;
$p1 = -($a * $c + $b * $b);
$p0 = $b * $c;

#  tex strings
$x = "x";
$f = "y";
$func = Formula("$p2 x^2 + $p1 x + $p0")->reduce;

$answer = List(Compute("$b/$a"),Compute("$c/$b"));


###########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Find the zeros of \( $f = $func \).
If there is more than one zero or a zero is repeated, 
enter your answers as a comma separated list. 
If no (real) zeroes exist, enter ${BBOLD}NONE${EBOLD}.
$BR
$BR
The zeros are \( $x = \) 
\{ ans_rule(20) \}
\{ AnswerFormatHelp("number") \}

END_TEXT
Context()->normalStrings;

########################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


;
ENDDOCUMENT();
