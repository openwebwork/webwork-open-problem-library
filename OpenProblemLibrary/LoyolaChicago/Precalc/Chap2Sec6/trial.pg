$r = random(3,8,1);
$k = random(2,7,1);
$x = random(10,16,1);
$s = random(2,8,1);
$i = random(0,1,1);
@sign = ("+","-");

$kx = $k * $x;

$i = 0;

if ( $i == 0 ){
 $answer = Compute("none");
} else {
 $answer = Compute("-$r m**2 + sqrt($s) m + $kx");
}

