###############################
#  Initialization

DOCUMENT();

loadMacros(        
"PGstandard.pl",
"MathObjects.pl",
"AppletObjects.pl",
"alignedChoice.pl",
"unionTables.pl",
"parserFunction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
