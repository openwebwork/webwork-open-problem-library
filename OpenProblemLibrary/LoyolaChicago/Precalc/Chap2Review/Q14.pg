DOCUMENT();

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl",
           "PGcourse.pl",
	   "contextLimitedPolynomial.pl",
);

TEXT(beginproblem());

Context("LimitedPolynomial-Strict");

$showPartialCorrectAnswers = 1;

$p = 2;
$k = random(1,5,1);
$f = "\( \ f(x) = x^2 + $k \ \)";

$m = random(2,6,2);
$b = random(3,9,2);
$g = "\( \ g(x) = $m x + $b \ \)";


$const_gf =  $m*$k + $b;
$gf = "$m x^2 + $const_gf ";

$gfmo = Compute( "$gf" );

Context()->texStrings;
BEGIN_TEXT

Let $f  and $g .  Evaluate and simplify the following:
$PAR
\( g \left( f(x) \right) = \) \{ ans_rule(30) \}

END_TEXT
Context()->normalStrings;

# ANS(fun_cmp( $gf,vars=>'x') );

ANS( $gfmo->cmp() );

$mk = $m*$k;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR

\[\begin{aligned}
 g(f(x)) &= $m \left( f(x) \right) + $b \\
&= $m \left( x^2 + $k \right) + $b \\
&= $m x^2 + $mk +$b \\
&= $m x^2 + $const_gf.
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;


ENDDOCUMENT();
