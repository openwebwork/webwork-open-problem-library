DOCUMENT();

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl",
           "PGcourse.pl",
	   "contextLimitedPolynomial.pl",
);

TEXT(beginproblem());

Context("Numeric");

$showPartialCorrectAnswers = 1;

$b = random(1,7,2);
$m = random(2,6,2);

Context("LimitedPolynomial-Strict");
$a = random(2,4,1);
$ans1_b = $a*$b;
$ans1_m = $m*$a;
$ans1 = "$ans1_b - $ans1_m x";

$ans1mo = Compute( "$ans1" );

$b_const = random(1,5,1);
$ans2_b = $b_const+$b;
$ans2 = "$ans2_b - $m x";

$ans2mo = Compute( "$ans2" );

$c = random(1,5,1);
$ans3_b = $b-$m*$c;
$ans3 = "$ans3_b + $m x";

$ans3mo = Compute( "$ans3" );

$ans4_c = $b**2;
$ans4_b = 2*$b*$m;
$ans4_a = $m**2;
$ans4 = "$ans4_a x^2 - $ans4_b x + $ans4_c";

$ans4mo = Compute( "$ans4" );

Context("Numeric")->operators->undefine( "-" );

$eval1 = $b - $m;
$ans5 = "$eval1/x";

$ans5mo = Compute( "$ans5" );

Context()->operators->redefine( "-" );
$ans6 = "sqrt($b - $m x)";

$ans6mo = Compute( "$ans6" );

Context()->texStrings;
BEGIN_TEXT

Let \( f(x) = $b - $m x \), evaluate and simplify the following.
$PAR
(a) \( $a f(x) = \) \{ ans_rule(35) \} $PAR
(b) \( f(x) + $b_const = \) \{ ans_rule(35) \} $PAR
(c) \( f($c - x) = \) \{ ans_rule(35) \} $PAR
(d) \( \big( f(x) \big)^2 = \) \{ ans_rule(35) \} $PAR
(e) \( f(1)/x = \) \{ ans_rule(35) \} $PAR
(f) \( \sqrt{f(x)} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

# ANS(fun_cmp( $ans1, vars=>'x' ) );
# ANS(fun_cmp( $ans2, vars=>'x' ) );
# ANS(fun_cmp( $ans3, vars=>'x' ) );
# ANS(fun_cmp( $ans4, vars=>'x' ) );
# ANS(fun_cmp( $ans5, vars=>'x' ) );
# ANS(fun_cmp( $ans6, vars=>'x' ) );

ANS( $ans1mo->cmp() );
ANS( $ans2mo->cmp() );
ANS( $ans3mo->cmp() );
ANS( $ans4mo->cmp() );
ANS( $ans5mo->cmp() );
ANS( $ans6mo->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
(a) \[\begin{aligned}
 2f(x) &= 2($b - $m x) \\
&= 2($b) - 2($m) x \\
&= $ans1_b - $ans1_m x.
\end{aligned}\]
$PAR
(b) \[\begin{aligned}
 f(x) + $b_const &= ($b - $m x) + $b_const \\
&=  ($b + $b_const) - $m x \\
&=  $ans2_b - $m x.
\end{aligned}\]
$PAR
(c) \[\begin{aligned}
  f($c-x) &=  $b - $m ($c-x)\\
&=  $b - $m($c) -$m(-x)\\
&=  $ans3_b + $m x.
\end{aligned}\]
$PAR
(d) \[\begin{aligned}
  \left( f(x) \right)^2 &=  ($b - $m x)^2\\
&=  $b^2 + 2(-$m)($b) + $m^2 x^2\\
&=  $ans4_a x^2 - $ans4_b x + $ans4_c.
\end{aligned}\]
$PAR
(e) \[ f(1)/x = \frac{$b - $m(1)}{x} =  \frac{$eval1}{x}. \]
$PAR
(f) \[  \sqrt{f(x)} = \sqrt{$b - $m x}. \]

END_SOLUTION
Context()->normalStrings;


ENDDOCUMENT();
