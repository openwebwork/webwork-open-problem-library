####################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");
Context()->variables->are(x=>"Real");

$var = "x";

$a = random(2,4,1);
$b = list_random(11,13,17,19);

$s = random(-1,1,2);

#$h = $s * random(3,9,1);
$h = random(3,9,1);
$h2 = 2 * $h;
$hh = $h**2;

#$expr = Formula("-$b + $h2 x + x^2")->reduce; # jumbles the output

if ($s == 1) {
  $expr = "-$b + $h2 x + x^2";
} else {
  $expr = "-$b - $h2 x + x^2";
}

$ansa = Formula("x+$s*$h")->reduce;
$ansb = Formula("-$hh-$b")->reduce;

####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT
Complete the square by writing \( $expr \) in the form
\( ($var-h)^2+k \).  Note: the numbers \( h \) and \( k \)
can be positive or negative.
$PAR
\( $expr = \big( \)
\{ ans_rule(10) \}
\( \big)^2 +  \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;

###################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($ansa->cmp() );
ANS($ansb->cmp() );

$s1 = ( $s == 1 ) ? '+' : '-';
$hhb = $hh + $b;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
We have
\[\begin{aligned}
 $expr &= x^2 $s1 $h2 x - $b \\
       &= x^2 $s1 $h2 x + $hh - $hh - $b\\
       &= (x $s1 $h)^2 - $hhb.
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
