####################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");
Context()->variables->are(t=>"Real");

$var = "t";

$a = random(2,4,1);
$b = list_random(11,13,17,19);

$s = random(-1,1,2);

$h = $s * random(3,9,1);
$a2h = $a * 2 * $h;
$ahh = $a * $h**2;

$expr = Formula("$a t^2 + $a2h t - $b")->reduce;

$ansa = Formula("$a");
$ansb = Formula("t+$h")->reduce;
$ansc = Formula("-$ahh-$b")->reduce;

####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT
Complete the square by writing \( $expr \) in the form
\( a($var-h)^2+k \).  Note: the numbers \( a,  h \) and \( k \)
can be positive or negative.
$PAR
\( $expr = \)
\{ ans_rule(5) \}
\( \cdot \big( \)
\{ ans_rule(10) \}
\( \big)^2 +  \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;

###################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($ansa->cmp() );
ANS($ansb->cmp() );
ANS($ansc->cmp() );

$s1 = ( $s == 1 ) ? '+' : '-';
$twoh = 2*abs($h);
$hh = $h*$h;
$ahhb = $ahh + $b;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
We have
\[\begin{aligned}
 $expr &= $a ($var^2 $s1 $twoh $var + $hh - $hh) - $b\\
       &= $a ($var^2 $s1 $twoh $var + $hh) - $ahh - $b\\
       &= $a ($var $s1 $h)^2 - $ahhb.
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
