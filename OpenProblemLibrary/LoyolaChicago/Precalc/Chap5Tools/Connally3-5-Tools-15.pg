####################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");
Context()->variables->are(x=>"Real");

$var = "x";

$a = -1; # random(2,4,1);
$b = random(3,6,1);

$h = random(3,9,1);
$h2 = 2 * $h;
$hh = $h**2;

$expr = "- x^2 + $h2 x - $b";

$ansa = Formula("$a");
$ansb = Formula("x-$h")->reduce;
$ansc = Formula("$hh-$b")->reduce;

####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT
Complete the square by writing \( $expr \) in the form
\( a($var-h)^2+k \).  Note: the numbers \( a,  h \) and \( k \)
can be positive or negative.
$PAR
\( $expr = \)
\{ ans_rule(5) \}
\( \cdot \big( \)
\{ ans_rule(10) \}
\( \big)^2 +  \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;

###################################
#  Answer evaluation

Context()->{error}{msg}{"Missing operand after '-'"} = "Enter '-1' instead of '-'";

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($ansa->cmp() );
ANS($ansb->cmp() );
ANS($ansc->cmp() );

$hhb = $hh - $b;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
We have
\[\begin{aligned}
 $expr &= -( x^2 - $h2 x) - $b) \\
       &= -( x^2 - $h2 x + $hh - $hh) - $b\\
       &= -( x^2 - $h2 x + $hh ) + $hh - $b\\
       &= -(x - $h)^2 + $hhb\\
       &= (-1)(x - $h)^2 + $hhb.
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
