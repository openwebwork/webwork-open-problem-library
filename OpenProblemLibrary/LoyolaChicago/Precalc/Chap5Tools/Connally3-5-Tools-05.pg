####################################
#  Initialization

DOCUMENT();  

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");
Context()->variables->are(s=>"Real");

$var = "s";

$a = random(2,4,1);
$b = list_random(11,13,17,19);

$s = random(-1,1,2);

$h = $s * random(3,9,1);
$h2 = 2 * $h;
$hh = $h**2;

$expr = Formula("s^2 + $h2 s - $b")->reduce;

$ansa = Formula("s+$h")->reduce;
$ansb = Formula("-$hh-$b")->reduce;

####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT
Complete the square by writing \( $expr \) in the form
\( ($var-h)^2+k \).  Note: the numbers \( h \) and \( k \) 
can be positive or negative.
$BR
$BR
\( $expr = \big( \)
\{ ans_rule(10) \}
\( \big)^2 +  \)
\{ ans_rule(10) \}
\{ AnswerFormatHelp("formulas") \} 
END_TEXT
Context()->normalStrings;

###################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($ansa->cmp() );
ANS($ansb->cmp() );


;
ENDDOCUMENT();
