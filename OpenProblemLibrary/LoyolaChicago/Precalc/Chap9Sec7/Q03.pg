DOCUMENT();

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
           "PGstandard.pl",
           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
#           "PGgraphmacros.pl",
           "MathObjects.pl",
#           "PGchoicemacros.pl"
          # "parserNumberWithUnits.pl",
          # "parserFormulaWithUnits.pl",
          # "parserFormulaUpToConstant.pl",
           "PGcourse.pl",
          );

TEXT(beginproblem());

Context("Numeric");
Context()->flags->set(useBaseTenLog=>0);        ####    log == ln

$showPartialCorrectAnswers = 1;

$actual_a = random(3,7,1);
$actual_p = random(1.3,1.9,.1);

@x = (2,3,4,5);
$n = 4;
for ($i = 0; $i <= $n-1; $i++) {
          $y[$i] = round( ($actual_a*$actual_p**$x[$i])*10000)/10000};

$sum_x = 0;
$sum_y = 0;
$sum_prod = 0;
$sum_xsq = 0;
$sum_ysq = 0;

for ($i = 0; $i <= $n-1; $i++){
                             $sum_x = $sum_x + $x[$i];
                             $sum_y = $sum_y + log($y[$i]);
                             $sum_prod = $sum_prod + $x[$i]*log($y[$i]);
                             $sum_xsq = $sum_xsq + $x[$i]**2;
                             $sum_ysq = $sum_ysq + log($y[$i])**2};

$b = ($n*$sum_prod - $sum_x * $sum_y)/($n*$sum_xsq - $sum_x**2);
$a = ($sum_y - $sum_x*$b)/$n;
$rd_b = round($b*10000)/10000;
$rd_a = round($a*10000)/10000;
#$b_prime = ($n*$sum_prod - $sum_x * $sum_y)/($n*$sum_ysq - $sum_y**2);
#if ($b >= 0) { $r = ($b*$b_prime)**(1/2)}
#        else { $r = -($b*$b_prime)**(1/2)};
#$rd_r = round($r*10000)/10000;

$initial = round(exp($rd_a)*100)/100;
$base = round(exp($rd_b)*100)/100;

$exp_fit = "$initial ($base)^x";
#$power_coef = $rd_r;

Context()->texStrings;
BEGIN_TEXT

Find a possible formula for an exponential function \( g(x) \):
$PAR
$BCENTER
\{ begintable(5) \}
\{ row ( "\( x \)", @x ) \}
\{ row ( "\( g(x) \)", @y ) \}
\{ endtable() \}
$ECENTER
$BR
$PAR
\( f(x) = \) \{ ans_rule(20) \}

END_TEXT
Context()->normalStrings;


ANS( Compute($exp_fit)->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
Regression on a calculator returns the exponential function
\( g(x) = $initial ($base)^{x} \).

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
