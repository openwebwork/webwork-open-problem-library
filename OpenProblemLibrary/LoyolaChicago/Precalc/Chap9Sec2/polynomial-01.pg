# DESCRIPTION
# Identifying the degree, leading coefficient, and constant coefficient in a polynomial
# ENDDESCRIPTION

## KEYWORDS('polynomial','zeros','long-run behavior','degree')

## DBsubject('Precalculus')
## DBchapter('Polynomial And Rational Functions')
## DBsection('Polynomial Functions')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('9.2')
## Problem1('')
## TitleText2('Functions Modeling Change');
## EditionText2('4')
## AuthorText2('Connally')
## Section2('11.2')
## Problem2('')
## Author('Paul Pearson')
## Institution('Fort Lewis College')

##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"alignedChoice.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

SRAND($psvn);


##################################
#  Setup

Context("Numeric");

$a = random(2,9,1);
do { $b = random(2,9,1); } until ($b != $a);
$m = random(2,9,1);
do { $n = random(3,9,2); } until ($n != $m);

$mpn = $m + $n;

$f = Formula("x^($m) ( $a - $b x^($n) )")->reduce();

$f_expanded = Formula("-$b x^($mpn) + $a x^($m) + 0");

Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>10, numbered=>0, tex_spacing=>"3pt");
$al->qa(
"degree", Compute("$m + $n")->cmp(),
"leading coefficient", Compute("-$b")->cmp(),
"constant coefficient", Compute("0")->cmp(),
);
Context()->normalStrings;


##################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
The polynomial \( f(x) = $f \) 
has 
$BR
\{ $al->print_q() \}
END_TEXT
Context()->normalStrings;


#################################
#  Answer evaluation

ANS( $al->correct_ans() );


#################################
#  Solution

Context()->texStrings;
BEGIN_SOLUTION
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
Since \( f(x) = $f = $f_expanded \), the degree is \( $mpn \), 
the leading coefficient is \( -$b \), and the constant
coefficient is \( 0 \).
END_SOLUTION

COMMENT('MathObject version');
ENDDOCUMENT();
