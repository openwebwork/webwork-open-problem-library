DOCUMENT();  

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##################################
#  Setup

Context("Numeric");

@x = (1,2,3,4,5,8,9);
$f = Formula("4**(7-x)");

$fvals[0] = 0; # not needed
foreach $i (1..9) {
  $fvals[$i] = $f->eval(x=>$i)->reduce;
}

#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Determine whether function whose values 
are given in the table below could be 
linear, exponential, or neither linear
nor exponential.
$BR
\{ pop_up_list(["?","linear","exponential","neither"]) \}
$BR
$BR
$BCENTER
\{ begintable(8) \}
\{ row( "\(x = \)", @x ) \}
\{ row( "\(f(x) = \)", @fvals[@x] ) \}
\{ endtable() \}
$ECENTER

END_TEXT
Context()->normalStrings;


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS(str_cmp("exponential") );

COMMENT("Not randomized.");


COMMENT('MathObject version');
ENDDOCUMENT();