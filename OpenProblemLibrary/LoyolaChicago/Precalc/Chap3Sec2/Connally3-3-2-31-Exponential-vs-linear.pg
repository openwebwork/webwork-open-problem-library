DOCUMENT();  

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##################################
#  Setup

Context("Numeric");
Context()->variables->are(t=>"Real");
Context()->variables->set(t=>{limits=>[0.5,1.5]});

$t1 = random(5,9,1);
$t2 = random(11,14,1);

$P1 = random( 3.2, 3.4, 0.01);
$P2 = random( 3.6, 3.8, 0.01);

$m = ($P2 - $P1) / ($t2 - $t1);

$linear = Formula("$m * (t - $t1) + $P1");

$b = ($P2 / $P1)**(1 / ($t2 - $t1) );
$a = $P1 / ($b**($t1));

$exponential = Formula("$a * ($b**t)");


#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Let \( P(t) \) be the population of a country,
in millions, \( t \) years after 1990, with
\( P($t1) = $P1 \) and \( P($t2) = $P2 \).
$BR
$BR
(a) Find a formula for \( P(t) \) assuming 
that it is linear.  
$BR
$BR
\( P(t) = \)
\{ ans_rule(40) \}
\{ AnswerFormatHelp("formula") \}
$BR
$BR
(b) Find a formula for \( P(t) \) assuming 
that it is exponential.  
$BR
$BR
\( P(t) = \)
\{ ans_rule(40) \}
\{ AnswerFormatHelp("formula") \}


END_TEXT
Context()->normalStrings;


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($linear->cmp() );
ANS($exponential->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();