DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"weightedGrader.pl",
"PGcourse.pl",
);

install_weighted_grader();

TEXT(beginproblem());

##################################
#  Setup

Context("Numeric");

@x = (0..4);
$a = random(11,15,1);
$b = random(0.6,0.9,0.1);
$h = Formula("$a * ($b**x)");

foreach $j (0..4) {
  $hvals[$j] = $h->eval(x=>$j)->reduce;
}

$M = random(-6,-2,1);
$B = random(14,24,1);
$i = Formula("$M * x + $B");

foreach $j (0..4) {
  $ivals[$j] = $i->eval(x=>$j)->reduce;
}

$select = random(0,1,1);

if ($select == 0) {

  $string1 = "exponential";
  $answer1 = $h;
  @array1 = @hvals;

  $string2 = "linear";
  $answer2 = $i;
  @array2 = @ivals;

} else {

  $string2 = "exponential";
  $answer2 = $h;
  @array2 = @hvals;

  $string1 = "linear";
  $answer1 = $i;
  @array1 = @ivals;

}

#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

(a) Determine whether function whose values
are given in the table below could be
linear or exponential.
$BR
