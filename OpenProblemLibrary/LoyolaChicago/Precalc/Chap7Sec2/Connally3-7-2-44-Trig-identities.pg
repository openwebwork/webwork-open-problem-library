loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
#  Setup

Context("Numeric");

# some Pythagorean triples

$a = list_random(3,5,6);

if ($a==3) {
  $b=4; $c=5;

} elsif ($a==5) {
  $b=12; $c=13;

} else { # a=6
  $b=8; $c=10;
}

$answera = Compute("-$b/$c");

$numb = -2*$a*$b;
$denb = $c*$c;
$answerb = Compute("$numb/$denb");

$numc = $c*$c-2*$a*$a;
$denc = $c*$c;
$answerc = Compute("$numc/$denc");

$numd = -2*$a*$b;
$dend = $b*$b-$a*$a;
$answerd = Compute("$numd/$dend");


###################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose that \( \sin(\theta) = $a / $c \) and
\( \theta \) is in the second quadrant.  Use
trigonometric identities to find the following
quantities exactly.
$PAR
(a) \( \cos(\theta) \) =
\{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$PAR
(b) \( \sin(2\theta) \) =
\{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$PAR
(c) \( \cos(2\theta) \) =
\{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$PAR
(d) \( \tan(2\theta) \) =
\{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


##################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answera->cmp() );
ANS($answerb->cmp() );
ANS($answerc->cmp() );
ANS($answerd->cmp() );

$asq = $a*$a;
$bsq = $b*$b;
$csq = $c*$c;
$twoab = 2*$a*$b;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
We know that \(\cos^2\theta=1-\sin^2\theta=1-($a/$c)^2=$bsq/$csq\), and
since \(\theta\) is in the second quadrant,
\(\cos\theta=-\sqrt{$bsq/$csq}=-$b/$c\). Thus \(\sin
2\theta=2\sin\theta\cos\theta=2($a/$c)(-$b/$c)=-$twoab/$csq\). Furthermore,
\(\cos 2\theta=1-2\sin^2\theta=1-2($a/$c)^2=$numc/$csq\), and
\(\tan 2\theta=\frac{\sin 2\theta}{\cos 2\theta}=
\frac{-$twoab}{$csq}\cdot\frac{$csq}{$numc}=\frac{-$twoab}{$numc}\).

END_SOLUTION

