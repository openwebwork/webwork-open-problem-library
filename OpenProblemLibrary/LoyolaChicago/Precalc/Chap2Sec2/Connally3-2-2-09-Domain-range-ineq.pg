DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextInequalities.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()); 

$showPartialCorrectAnswers = 1;

####################################
#  Setup

Context("Inequalities-Only")->variables->are(x=>"Real");

$a = random(3,7,1);
$aa = $a * $a;

$f = Formula("1/sqrt(x-$aa )");

$domain = Compute("x > $aa");

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the domain and range of the function 
\( \displaystyle y = f(x) = $f \).
Your answers must be inequalities (not intervals).
$BR
$BR
Domain: \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
$BR
END_TEXT

ANS($domain->cmp());



Context("Inequalities-Only")->variables->are(y=>"Real");

$range  = Compute("y > 0");

BEGIN_TEXT
Range: $SPACE \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation


ANS($range->cmp());


COMMENT('Answers must be inequalities (not intervals).');
ENDDOCUMENT();
