DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextInequalities.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

####################################
#  Setup

Context("Inequalities");
Context()->variables->add(y=>"Real");

$a = random(3,7,1);
$aa = $a * $a;

$f = Formula("sqrt($aa - x)");

$domain = Compute("x <= $aa");
$range  = Compute("y >= 0");

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Find the domain and range of the function 
\( y = f(x) = $f \).
$BR
$BR
Domain: \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
$BR
Range: $SPACE \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}

END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($domain->cmp());
ANS($range->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();
