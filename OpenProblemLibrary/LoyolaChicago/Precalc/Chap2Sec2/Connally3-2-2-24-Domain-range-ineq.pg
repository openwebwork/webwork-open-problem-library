DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextInequalities.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()); 

$showPartialCorrectAnswers = 1;

####################################
#  Setup

Context("Inequalities")->variables->are(x=>"Real");

$a = random(3,7,1);
$b = random(2,6,1);

$f = Formula("(x - $a)^2 + $b");

$domain = Compute("-infinity < x < infinity");

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the domain and range of the function 
\( y = f(x) = $f \).
$BR
$BR
Domain: \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
$BR
END_TEXT
Context()->normalStrings;

ANS($domain->cmp());



Context("Inequalities")->variables->are(y=>"Real");

$range  = Compute("y >= $b");


Context()->texStrings;
BEGIN_TEXT
Range: $SPACE \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation


ANS($range->cmp());

ENDDOCUMENT();
