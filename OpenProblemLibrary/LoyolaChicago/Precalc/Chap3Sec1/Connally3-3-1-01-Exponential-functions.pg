DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##################################
#  Setup

Context("Numeric");
Context()->variables->are(m=>"Real");

$r = random(3,8,1);
$b = Real("1 + $r/100");

#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

What is the growth ${BITALIC}factor${EITALIC}
if water usage is increasing by $r${PERCENT}
per year.  Assume that time is measured in
years.
$PAR
\{ ans_rule(10) \}
\{ AnswerFormatHelp("number") \}

END_TEXT
Context()->normalStrings;


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 0;

ANS($b->cmp(tolType=>'absolute', tolerance=>'0') );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
The annual growth factor is \(1+\) the growth rate, so we
have \($b\).

END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
