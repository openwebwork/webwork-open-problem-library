DOCUMENT();

loadMacros("PG.pl",
           "PGbasicmacros.pl",
#           "PGchoicemacros.pl",
           "PGanswermacros.pl",
#           "PGgraphmacros.pl",
#           "extraAnswerEvaluators.pl",
#           "PGauxiliaryFunctions.pl",
"MathObjects.pl",
"contextLimitedPolynomial.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
           );

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("LimitedPolynomial")->variables->are(n=>"Real");

$b = random(2,9,1);
$c = random(1,9,1);
if ($b == $c) {$c = $c+2};

$i = random(0,1,1);
@q1 = ("-m(n)", "m(-n)");
@ans1 = ( "-n^2 + $b n - $c", "n^2 + $b n + $c" );

@reason = ("\( y = -m(n) = - \left( n^2 - $b n + $c \right) = - n^2 + $b n - $c \)",
"\( y = m(-n) = (-n)^2 - $b(-n) + $c  = n^2 + $b n + $c \)");


Context()->texStrings;
BEGIN_TEXT

Write a ${BBOLD}simplified${EBOLD} formula
(in terms of the independent variable \(n\)) for the transformation of
\( m(n) = n^2 - $b n + $c \) given below.
$PAR
\( y = $q1[$i] = \) \{ ans_rule(30) \}
\{ AnswerFormatHelp("formulas") \}

END_TEXT
Context()->normalStrings;

ANS(Compute("$ans1[$i]")->cmp() );

#ANS(fun_cmp($ans1[$i],vars=>'n') );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
$reason[$i]

END_SOLUTION
Context()->normalStrings;



COMMENT('MathObject version');
ENDDOCUMENT();
