DOCUMENT();       

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl"
           );
       
TEXT(beginproblem()); # standard preamble to each problem.


$showPartialCorrectAnswers = 1;

$base = random(2,9,1);


$c = random(1,9,1);
$i = random(0,1,1);
$i = 1;
@q2 = ("-k(w) + $c", "k(-w) + $c");
@ans2 = ( "-($base)^w + $c", "$base^(-w) + $c" );

@reason = (
"\( y = -k(w) + $c = - \left( $base^{w} \right) + $c = - ($base)^{w} + $c \)",
"\( y = k(-w) + $c = $base^{(-w)} + $c = $base^{-w} + $c \)");


BEGIN_TEXT
Write a formula (in terms of the independent variable $BITALIC w${EITALIC}) for the transformation of \( \ k(w) = $base^w \) given below.  
$BR
$SPACE
$BR
\( y = $q2[$i] = \) \{ ans_rule(30) \}


END_TEXT

ANS(fun_cmp($ans2[$i],vars=>'w') );

SOLUTION(EV3(<<'END_SOLUTION'));
$BR $SPACE $BR 
$BBOLD  SOLUTION $EBOLD
$BR 
$reason[$i]
$BR
END_SOLUTION


ENDDOCUMENT();   # This should be the last executable line in the problem.
