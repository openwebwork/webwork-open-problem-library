# DESCRIPTION
# Problem from Functions Modeling Change, Connally et al., 3rd ed.

## DBsubject(Trigonometry)
## DBchapter(Trigonometric functions)
## DBsection(Trigonometric functions of special angles)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## MLT(One_function_one_angle)
## Level(2)
## MO(1)
## TitleText1('Functions Modeling Change')
## TitleText2('Functions Modeling Change')
## TitleText3('Functions Modeling Change')
## AuthorText1('Connally')
## AuthorText2('Connally')
## AuthorText3('Connally')
## EditionText1('3')
## EditionText2('4')
## EditionText3('5')
## Section1(6.6)
## Section2('8.3')
## Section3('7.6')
## Problem1(10)
## Problem2('2')
## Problem3('9')
## KEYWORDS('tangent','cotangent','cosecant','secant')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Fraction-NoDecimals");
Context()->flags->set(reduceConstants=>0);
Context()->flags->set(reduceConstantFunctions=>0);

@angles = (
"pi/6",  "pi/4",  "pi/3",
"2pi/3", "3pi/4", "5pi/6",
"7pi/6", "5pi/4", "4pi/3",
"-pi/3", "-pi/4", "-pi/6"
);

@anglestex = (
"\frac{\pi}{6}",  "\frac{\pi}{4}",  "\frac{\pi}{3}",
"\frac{2\pi}{3}", "\frac{3\pi}{4}", "\frac{5\pi}{6}",
"\frac{7\pi}{6}", "\frac{5\pi}{4}", "\frac{4\pi}{3}",
"\frac{-\pi}{3}", "\frac{-\pi}{4}", "\frac{-\pi}{6}"
);

$i = random(0,2,1);

$func = "\cot"; # tex
@values = (
"sqrt(3)",   "1",   "1/sqrt(3)",
"-1/sqrt(3)",  "-1",  "-sqrt(3)",
"sqrt(3)",     "1",   "1/sqrt(3)",
"-1/sqrt(3)",  "-1",  "-sqrt(3)",
);

$answer = Compute("$values[$i]");

Context()->functions->disable("All");
Context()->functions->enable("sqrt");

Context()->texStrings;
BEGIN_TEXT
Without using a calculator, find the exact value as fraction (not a decimal approximation).
$PAR
\( \displaystyle $func\left( $anglestex[$i] \right) \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("fractions") \}
END_TEXT
Context()->normalStrings;

ANS($answer->cmp() );

@valuesTex = (
"\sqrt{3}",   "1",   "\frac1{\sqrt{3}}",
"-\frac1{\sqrt{3}}",  "-1",  "-\sqrt{3}",
"\sqrt{3}",     "1",   "\frac1{\sqrt{3}}",
"-\frac1{\sqrt{3}}",  "-1",  "-\sqrt{3}",
);
$ansTex = $valuesTex[$i];

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
\[ $func\left($anglestex[$i]\right) = $ansTex. \]

END_SOLUTION

COMMENT("Cotangent in first quadrant");


;
ENDDOCUMENT();
