$graph[0]->lb(new Label(-.3,2,$up1,'black','right','middle'));
#$graph[0]->moveTo(2*$i+1,.1);
#$graph[0]->lineTo(2*$i+1,-.1,'black') };
$pt[0] = closed_circle(0,2, black );
