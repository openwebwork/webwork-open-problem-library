for ($i = 0; $i <= 3; $i++){
    $graph0->lb(new Label(2*$i+1,-0.15,2*$i+1,'black','center','top'));
    $graph0->moveTo(2*$i+1,.1);
    $graph0->lineTo(2*$i+1,-.1,'black') };
for ($i = 0; $i <= 1; $i++){
    $graph0->lb(new Label(-2*$i-1,-0.15,-2*$i-1,'black','center','top'));
    $graph0->moveTo(-2*$i-1,.1);
    $graph0->lineTo(-2*$i-1,-.1,'black') };
$graph0->lb(new Label(-.3,1,1,'black','right','middle'));
