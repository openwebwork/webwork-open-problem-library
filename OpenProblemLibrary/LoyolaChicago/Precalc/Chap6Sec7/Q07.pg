# DESCRIPTION
# Problem from Functions Modeling Change, Connally et al., 3rd ed.
# ENDDESCRIPTION

## DBsubject(Trigonometry)
## DBchapter(Analytic trigonometry)
## DBsection(Solving trigonometric equations exactly)
## Institution(Fort Lewis College)
## Author(Paul Pearson)
## MLT(linearForm)
## Level(3)
## MO(1)
## TitleText1('Functions Modeling Change')
## AuthorText1('Connally')
## EditionText1('3')
## Section1('6.7')
## Problem1('14')
## TitleText2('Functions Modeling Change')
## AuthorText2('Connally')
## EditionText2('4')
## Section2('8.4')
## Problem2('14')
## KEYWORDS('arctan','arcsin','arccos','reference angle')

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Fraction-NoDecimals");
Context()->flags->set(reduceConstants=>0);
Context()->flags->set(reduceConstantFunctions=>0);


$func = "\cos"; # tex

$i = random(0,5,1);

@values = (
"\frac{\sqrt{3}}{2}","\frac{\sqrt{2}}{2}","\frac{1}{2}",
"-\frac{\sqrt{3}}{2}","-\frac{\sqrt{2}}{2}","-\frac{1}{2}"
);

if ($i == 0) {
  $answer = List(Compute("pi/6"),Compute("11pi/6"));
  $answerTex = "\frac{\pi}{6}, \frac{11\pi}{6}";
} elsif ($i == 1) {
  $answer = List(Compute("pi/4"),Compute("7pi/4"));
  $answerTex = "\frac{\pi}{4}, \frac{7\pi}{4}";
} elsif ($i == 2) {
  $answer = List(Compute("pi/3"),Compute("5pi/3"));
  $answerTex = "\frac{\pi}{3}, \frac{5\pi}{3}";
} elsif ($i == 3) {
  $answer = List(Compute("5pi/6"),Compute("7pi/6"));
  $answerTex = "\frac{5\pi}{6}, \frac{7\pi}{6}";
} elsif ($i == 4) {
  $answer = List(Compute("3pi/4"),Compute("5pi/4"));
  $answerTex = "\frac{3\pi}{4}, \frac{5\pi}{4}";
} else {
  $answer = List(Compute("2pi/3"),Compute("4pi/3"));
  $answerTex = "\frac{2\pi}{3}, \frac{4\pi}{3}";
}


Context()->functions->disable("All");
Context()->functions->enable("sqrt");

Context()->texStrings;
BEGIN_TEXT
Without using a calculator, find all solutions to
\( \displaystyle $func(\theta) = $values[$i] \) in the interval
\( 0 \leq \theta \leq 2\pi \).  If there is more than
one answer, enter your answers as a comma separated list.
Your answers should be exact values (given as fractions,
not decimal approximations).
$PAR
\( \theta \) = \{ ans_rule(30) \}
\{ AnswerFormatHelp("angles") \}
END_TEXT
Context()->normalStrings;

ANS($answer->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
Since \($func(\theta) = $values[$i]\), we have \(\theta = $answerTex\).

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
