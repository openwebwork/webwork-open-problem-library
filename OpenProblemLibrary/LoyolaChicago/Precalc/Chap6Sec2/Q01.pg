#ANS(num_cmp( $y[3], tol=>'0.001' ) );
#ANS(str_cmp($pt[4]));
#ANS(num_cmp( $x[4], tol=>'0.001' ) );
#ANS(num_cmp( $y[4], tol=>'0.001' ) );
#ANS(str_cmp($pt[5]));
#ANS(num_cmp( $x[5], tol=>'0.001' ) );
#ANS(num_cmp( $y[5], tol=>'0.001' ) );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
