DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a1 = random(-5,-3,1);
$b1 = random(3,5,1);
$answera = Real("$a1 * $b1**2");

$a2 = random(3,7,1);
$b2 = random(3,7,1);
$answerb = Real("1");

$a3 = list_random(2.1, 2.2, 2.3, 2.4, 2.5, 2.6, 2.7, 2.8, 2.9);
$c3 = random(3,5,1);
$answerc = Real("$a3 * 10**($c3)");

$select = random(0,1,1);
if ($select == 0) {
  $a4 = random(4,6,1);
  $b4 = 2**($a4);
  $answerd = Real("2");
} else {
  $a4 = random(3,4,1);
  $b4 = 3**($a4);
  $answerd = Real("3");
}

Context()->operators->undefine("+","-","*","/","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate the following without a calculator.
Simplify your answers as much as possible.
$BR
$BR
(a) \( ($a1)$b1^2 = \)
\{ans_rule(10)\}
$BR
$BR
(b) \( \left( $a2^0 \right)^{$b2} = \)
\{ans_rule(10)\}
$BR
$BR
(c) \( $a3 \left( 10^{$c3} \right) = \)
\{ans_rule(10)\}
$BR
$BR
(d) \( $b4^{1/$a4} = \)
\{ans_rule(10)\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answer evaluation

#install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($answera->cmp());
ANS($answerb->cmp());
ANS($answerc->cmp());
ANS($answerd->cmp());

$b1sq = $b1*$b1;
$tc3 = 10**$c3;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
(a) \( ($a1)$b1^2 = $a1\cdot $b1sq = $answera \).
$PAR
(b) \( \left( $a2^0 \right)^{$b2} = 1^{$b2} = $answerb \).
$PAR
(c) \( $a3 \left( 10^{$c3} \right) = $a3\cdot $tc3 = $answerc \).
$PAR
(d) \( $b4^{1/$a4} = $answerd \).

END_SOLUTION

;
ENDDOCUMENT();
