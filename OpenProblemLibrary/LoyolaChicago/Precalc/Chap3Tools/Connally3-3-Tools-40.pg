DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a1 = random(3,9,1);
$answera = Real("1/($a1**2)");

$a2 = random(2,5,1);
$aa2 = $a2 * $a2;
$answerb = Real("1/(($a2)**3)");

$a3 = random(3,5,1);
$b3 = $a3**3;
$answerc = Real("$a3");

$a4 = random(3,9,1);
$answerd = Real("$a4**2");

Context()->operators->undefine("+","-","*","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate the following without a calculator.
Simplify your answers as much as possible.
$PAR
(a) \( $a1^{-2} = \)
\{ans_rule(10)\}
$PAR
(b) \( $aa2^{-3/2} = \)
\{ans_rule(10)\}
$PAR
(c) \( \displaystyle \left( \frac{1}{$b3} \right)^{-1/3} = \)
\{ans_rule(10)\}
$PAR
(d) \( \displaystyle \frac{1}{ $a4^{-2} } = \)
\{ans_rule(10)\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answer evaluation

#install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($answera->cmp());
ANS($answerb->cmp());
ANS($answerc->cmp());
ANS($answerd->cmp());

$a1sq = $a1*$a1;
$a2cu = $a2*$a2*$a2;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
(a) \( $a1^{-2} = \frac{1}{$a1sq} \).
$PAR
(b) \( $aa2^{-3/2} = \frac{1}{$a2^3} = \frac{1}{$a2cu} \).
$PAR
(c) \( \displaystyle \left( \frac{1}{$b3} \right)^{-1/3} = $b3^{1/3} = $answerc \).
$PAR
(d) \( \displaystyle \frac{1}{ $a4^{-2} } = $a4^2 = $answerd \).

END_SOLUTION

;
ENDDOCUMENT();
