DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextLimitedPolynomial.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("LimitedPolynomial-Strict");
Context()->variables->are(w=>"Real",x=>"Real",y=>"Real");

$a1 = random(2,8,2);
$b1 = random(2,8,2);
while ($b1 == $a1) { $b1 = random(2,8,2); }
$aa1 = $a1 / 2;
$bb1 = $b1 / 2;
$answera = Formula("w**($aa1) * x**($bb1)");

$a2 = random(2,5,1);
$b2 = $a2**3;
$c2 = random(6,12,3);
$d2 = $c2 / 3;
$answerb = Formula("$a2 * w**($d2)");

$a3 = random(5,8,1);
$aa3 = $a3**2;
$b3 = random(2,8,2);
$c3 = random(2,8,2);
while ($c3 == $b3) { $c3 = random(2,8,2); }
$bb3 = $b3 / 2;
$cc3 = $c3 / 2;
$answerc = Formula("$a3 * x**($bb3) * y**($cc3)");


$a4 = random(4,8,2);
$aa4 = $a4**2;
$A4 = $aa4 / 2;
$b4 = random(3,9,2);
$c4 = random(3,9,2);
$d4 = ($b4 + $c4)/2;
$e4 = random(2,8,2);
$f4 = random(2,8,2);
$g4 = ($e4 + $f4)/2;
$answerd = Formula("$a4 * w**($d4) * y**($g4)");

#Context()->operators->undefine("+","-","*","**","^");
#Context()->functions->disable("All");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Simplify each expression as much as possible
and leave it without radicals.
$PAR
(a) \( \sqrt{ w^{$a1} x^{$b1} } = \)
\{ans_rule(10)\}
$PAR
(b) \( \sqrt[3]{ $b2 w^{$c2} } = \)
\{ans_rule(10)\}
$PAR
(c) \( \sqrt{$aa3 x^{$b3} y^{$c3} } = \)
\{ans_rule(10)\}
$PAR
(d) \( \sqrt{ $A4 w^{$b4} y^{$e4} } \sqrt{ 2 y^{$f4} w^{$c4} } = \)
\{ans_rule(10)\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answer evaluation

#install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($answera->cmp());
ANS($answerb->cmp());
ANS($answerc->cmp());
ANS($answerd->cmp());

$twod4 = 2*$d4;
$twog4 = 2*$g4;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
(a) \( \sqrt{ w^{$a1} x^{$b1} } = (w^{$a1} x^{$b1})^{1/2} =
       w^{$a1/2} x^{$b1/2} = $answera \).
$PAR
(b) \( \sqrt[3]{ $b2 w^{$c2} } = ($b2 w^{$c2})^{1/3} = $b2^{1/3} w^{$c2/3} =
       $answerb \).
$PAR
(c) \( \sqrt{$aa3 x^{$b3} y^{$c3} } = ($aa3 x^{$b3} y^{$c3})^{1/2} =
       $answerc \).
$PAR
(d) \( \sqrt{ $A4 w^{$b4} y^{$e4} } \sqrt{ 2 y^{$f4} w^{$c4} } =
       \sqrt{ ($A4 w^{$b4} y^{$e4})\cdot (2 y^{$f4} w^{$c4}) } =
       ( $aa4 w^{$twod4} y^{$twog4} )^{1/2} =
       $answerd \).

END_SOLUTION

COMMENT('MathObject version');
ENDDOCUMENT();
