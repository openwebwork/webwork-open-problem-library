DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

$a1 = random(4,9,1);
$answera = Real("$a1");

$a2 = random(4,9,1);
$aa2 = $a2 * $a2;
$b2 = random(3,9,2);
$answerb = Real("-($a2)");

$a3 = random(3,7,1);
$b3 = $a3**2 / 100;
$answerc = Real("$a3 / 10");

$a4 = random(-5,-2,1);
$b4 = $a4**3;
$answerd = Real("($a4)**2");

Context()->operators->undefine("+","-","*","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate the following without a calculator.
Simplify your answers as much as possible.
$PAR
(a) \( \sqrt{ (-$a1)^2 } = \)
\{ans_rule(10)\}
$PAR
(b) \( (-1)^{$b2} \cdot \sqrt{$aa2} = \)
\{ans_rule(10)\}
$PAR
(c) \( ($b3)^{1/2} = \)
\{ans_rule(10)\}
$PAR
(d) \( ($b4)^{2/3} = \)
\{ans_rule(10)\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answer evaluation

#install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($answera->cmp());
ANS($answerb->cmp());
ANS($answerc->cmp());
ANS($answerd->cmp());

$a1sq = $a1*$a1;
$a3sq = $a3*$a3;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD SOLUTION $EBOLD
$PAR
(a) \( \sqrt{ (-$a1)^2 } = \sqrt{$a1sq} = $answera \).
$PAR
(b) \( (-1)^{$b2} \cdot \sqrt{$aa2} = -1\sqrt{$a2^2} = $answerb \).
$PAR
(c) \( ($b3)^{1/2} = \left(\frac{$a3sq}{100}\right)^{1/2} = \frac{$a3}{10} = $answerc \).
$PAR
(d) \( ($b4)^{2/3} = ($a4)^2 = $answerd \).

END_SOLUTION

COMMENT('MathObject version');
ENDDOCUMENT();
