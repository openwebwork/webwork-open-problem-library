##############################################
#  Setup

Context("LimitedPolynomial-Strict");
Context()->variables->are(L=>"Real",P=>"Real");

$a = random(2,5,1);
$aa = $a * $a;
$aaa = $a**3;

$b = list_random(2,3);

$ab = $a**$b;

$c = $b + 1;

$ac = $a**$c;

$answer = Formula("$ac * L");


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Simplify the expression as much as possible 
and leave it without radicals.
$BR
$BR
\( \big( $ab L^{$b / $c} P \big)^{$c / $b} \big( P \big)^{-$c / $b} = \) 
\{ ans_rule(20) \}

END_TEXT
Context()->normalStrings;

##################################################
