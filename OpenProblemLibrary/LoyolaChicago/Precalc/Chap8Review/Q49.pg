           "PGcourse.pl"
);

TEXT(beginproblem());

Context("Numeric");


$showPartialCorrectAnswers = 1;

$m = random(2,8,2);
$b = 1;
$k = random(3,9,2);
$c = random(1,9,1);

$n = random(2,9,1);
$d = random(2,9,1);
$p = random(3,6,1);

$ans = "x^(1/$p)/$n";

$disp = "\frac{\sqrt[$p]{x}}{$n}";


Context()->texStrings;
BEGIN_TEXT

Let \( p(x) = $n x -$d \) and \( q(x) = \sqrt[$p]{x} - $d \).
Find \( u(x) \) given that \( q(x) = p \big( u(x) \big) \).
$BR
\( u(x) = \) \{ ans_rule(20) \}

END_TEXT
Context()->normalStrings;

# ANS(fun_cmp( $ans ,vars=>'x') );
ANS( Compute($ans)->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
\( q(x) = p(u(x)) = \sqrt[$p]{x}-$d = $n (u(x)) - $d \)
$PAR
Therefore \( $n \cdot u(x) = \sqrt[$p]{x} \) and
\( u(x) = \frac{ \sqrt[$p]{x}}{$n} \).

END_SOLUTION
Context()->normalStrings;


