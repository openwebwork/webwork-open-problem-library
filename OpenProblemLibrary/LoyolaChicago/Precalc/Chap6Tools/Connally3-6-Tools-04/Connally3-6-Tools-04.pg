#  End trig functions in degrees
###################################################




$x = random(3,7,1);
$theta = random(10,40,1);
while ($theta == 30) { $theta = random(10,40,1); }
$phi = 90-$theta;


$ansy = Compute("$x tan($theta)");
$ansz = Compute("$x / cos($theta)");


Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>20, numbered=>1, tex_spacing=>"3pt");
$al->qa(
  "\(y\)", $ansy->cmp,
  "\(z\)", $ansz->cmp,
);
Context()->normalStrings;



