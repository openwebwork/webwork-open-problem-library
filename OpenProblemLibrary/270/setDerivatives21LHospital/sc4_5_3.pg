loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,15,1);

TEXT(EV2(<<EOT));
$BR
Evaluate the limit using L'Hospital's rule if necessary
\[ \lim_{ x \rightarrow 0 } \frac{e^{x}-1}{\sin
($a x)} \]
$BR \{ans_rule(25) \}
$BR
EOT

$ans = 1/$a;
ANS(num_cmp($ans));

