TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$kk = random(2,6,1);
$nk = random(40,60,1);
$n  = $kk * $nk;
$nn = random(100,200,1);

while($n == $nn){
    $nn = random(100,200,1);
}


$a2 = random(2,$n,1);
$b2 = random(2,$n,1);


while(gcd($a2, $b2)>1){
    $b2 = random(2,$n,1);
}
if($a2 > $b2){
    $c2 = $b2;
    $b2 = $a2;
    $a2 = $c2;
}
$a = $a2 * $kk;
$b = $b2 * $kk;

$g = gcd($a,$b);
$G = gcd($n,$g);

$answer = $n/$G;

$i = 0;
$t = 0;

while($i<10000 && $t == 0){
    if($answer<$i){
#        $answer = $i-1;
        $t = 1;
    }
    $i++;
}
###################################################################

$aa = random(2,$nn,1);
$bb = random(2,$nn,1);
while($aa == $bb){
    $bb = random(2,$nn,1);
}
if($aa > $bb){
    $cc = $bb;
    $bb = $aa;
    $aa = $cc;
}

$gg = gcd($aa,$bb);
$GG = gcd($nn,$gg);

$answerr = $nn/$GG;

$ii = 0;
$tt = 0;

while($ii<10000 && $tt == 0){
    if($answerr<$ii){
#        $answerr = $ii-1;
        $tt = 1;
    }
    $ii++;
}



BEGIN_TEXT

Determine the size of the smallest subgroup of \( \{ cyclic( $n ) \} \) containing \($a\) and \($b\). $BR $BR

\{ans_rule(10)\} $BR $BR

Determine the size of the smallest subgroup of \( \{ cyclic( $nn ) \} \) containing \($aa\) and \($bb\). $BR $BR

\{ans_rule(10)\} $BR $BR




END_TEXT


ANS(str_cmp($answer) );
ANS(str_cmp($answerr) );




SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Let \(a, b\) be two elements  of the cyclic group
\(
   \{ cyclic( n ) \} 
\).
Then the subgroup 
\(
  \langle a, b \rangle
\)
is generated by 
\(
  g := gcd(a, b)
\).
In particular, this subgroup has size
\(
n/ gcd(g, n)
\).



END_SOLUTION


