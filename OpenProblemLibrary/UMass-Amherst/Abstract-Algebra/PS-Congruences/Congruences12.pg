DOCUMENT();        

loadMacros(
"PG.pl",
"MathObjects.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);




TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

%set1 = ( '0' => 2,
         '1' => 3,
         '2' => 5,
         '3' => 7,);

%set2 = ( '0' => 11,
         '1' => 13,
         '2' => 17,
         '3' => 19,);


$z1 = random(0,3,1);
$z2 = random(0,3,1);

$b = $set1{$z1};
$m = $set2{$z2};
$c = random(1,3,1);

$mm = $m-1;

$x = random(100,999,1);
$y = 1;
$w = 0;

while($w < $x){
    $w = $y*$mm;
    $y = $y+1;
}

$e = $w + $c;

$ans[0] = Compute( $b**$c );




TEXT(EV3(<<'EOT'));

What is the remainder of \($b^{$e}\) when divided by \($m\)? $BR $BR



 \{ ans_rule(10) \}



EOT

ANS( $ans[0]->cmp() );



ENDDOCUMENT(); 
