## DBsubject(Abstract algebra)
## DBchapter(Groups)
## DBsection(Cyclic groups)
## Institution(University of Massachusetts Amherst)
## Author(Siman Wong and Patrick O'Brien)
## Level(3)
## MO(1)
## KEYWORDS('cyclic groups, order of elements')



DOCUMENT();        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

Context("Numeric");
@set = (3,4,5,7,11,13,17);

$r1 = random(0,6,1);
$r2 = random(0,6,1);
while($r1 == $r2){
    $r2 = random(0,6,1);
}

$k = $set[$r1];
$a = $set[$r2];
$n = $k*$a;

@ans1 = ();

for ($i=1; $i<$k; $i++){
  $b = $a*$i;
  if (gcd($b,$k)==1){
    push(@ans1,$b);
  }
}

$answer1 = List(@ans1); 

@ans2 = ();

for($i=0;$i<$a;$i++){
    push(@ans2,$i*$k);
}

$answer2 = List(@ans2);

Context()->texStrings;
BEGIN_TEXT

(a) Find all elements in \( \{ cyclic( $n ) \} \) of order \($k\). $PAR

\{ ans_rule(30) \} $PAR

(b) Find all elements in the subgroup \(\langle $k \rangle\) of \( \{ cyclic( $n ) \} \). $PAR

\{ ans_rule(30) \}


END_TEXT
Context()->normalStrings;

ANS( $answer1->cmp());
ANS( $answer2->cmp());

ENDDOCUMENT();       
