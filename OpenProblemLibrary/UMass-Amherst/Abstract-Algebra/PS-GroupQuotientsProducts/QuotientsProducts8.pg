#  In this problem we determine the order of elements in various 
#  products of groups


  # part 1 & 2 use the same n,m (m=n allowed) and same pair of elements x,y

$m = random(15,30);
$n = random(12,24);

# the m=n check is to avoid m,n being (the same) prime
# we need to avoid prime modulus, otherwise cannot pick y and z later on

if (gcd($m, $n)==1 || $m==$n) {
  $m = random(15,30);
  $n = random(12,20);
}
$m2 = $m * 2;

$x = random(2, $m-2, 1);
$y = random(2, $n-2, 1);
while( gcd($y, $n)>1 ) {
  $y = random(2, $n-2, 1);
}

  # part 1:  Z_m x Z_n

$i=1;
while( ($i*$x)% $m > 0 ) {
  $i++;
}
$j=1;
while( ($j*$y)% $n > 0 ) {
  $j++;
}

$ans1 = lcm($i, $j);



  # part 1:  Z_m x U(n)
  #   note that we can recycle the ord(x) calculation from part 1

  # start at k=2 since  y != 1 (mod n)
$k=2;
$yy = $y * $y;
while( ($yy)% $n > 1 ) {
  $k++;

  # try to avoid integer overflow !
  #
  $yy = ($yy * $y)% $n;
}

$ans2 = lcm($i, $k);



  # part 3:  U(m) x D_n
  #  order of a^u  in  D_n  is  n/gcd(u,n)


$z = random(2, $m-2, 1);
while( gcd($z, $m)>1 ) {
  $z = random(2, $m-2, 1);
}
  # start at k=2 since  z != 1 (mod m)
$e=2;
$zz = $z * $z;
while( ($zz)% $m > 1 ) {
  $e++;

  # avoid integer overflow !
  #
  $zz = ($zz * $z)% $m
}
$u = random(1, $n-1, 1);

$ans3 = lcm($e,  $n/gcd($n, $u));





BEGIN_TEXT


Determine the order of each of the following elements in the respective
products of groups
(\(\{ dihedral( $m ) \} \)
  denotes
the dihedral group of order \($m2\) ).


 $BR $BR

\{ begintable(3) \}
\{ row( "element", 
        "product", 
        "order")
\}
\{ row( "\( ( $x \pmod{$m},  $y \pmod{$n} ) \)", 
        "\(" .  cyclic( $m ) . "\times " . cyclic($n) . "\)", 
        ans_rule(21))
\}
\{ row( "\( ( $x \pmod{$m},  $y \pmod{$n} ) \)", 
        "\(" .  cyclic( $m ) . "\times U($n)\)", 
        ans_rule(21))
\}
\{ row( "\( ( $z \pmod{$m},  a^{$u} ) \)", 
        "\( U( $m ) \times " . dihedral( $n ) . "\)", 
        ans_rule(21))
\}
\{ endtable() \} $BR


END_TEXT


ANS(num_cmp( $ans1 ));
ANS(num_cmp( $ans2 ));
ANS(num_cmp( $ans3 ));




