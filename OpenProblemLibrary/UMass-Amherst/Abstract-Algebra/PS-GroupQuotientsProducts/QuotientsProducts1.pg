TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

Context()->strings->add(Y=>{});
Context()->strings->add(N=>{});
Context()->strings->add(i=>{});
Context()->strings->add(j=>{});
Context()->strings->add(k=>{});
Context()->strings->add(-i=>{});
Context()->strings->add(-j=>{});
Context()->strings->add(-k=>{});



$n1   =  random(12, 30, 1);
$m1   =  random(12, 30, 1);
if($n1 > $m1) {
  $small = $m1;
}
else{
  $small = $n1;
}
$a1   =  random(2, $small, 1);
$b1   =  random(2, $small, 1);

while( gcd($a1, $n1)>1 || gcd($b1, $m1)>1 || gcd($a1, $m1)>1 || gcd($b1, $n1)>1 || gcd($n1, 30)==1 || gcd($m1, $n1)==1){
  $n1   =  random(12, 30, 1);
  $m1   =  random(12, 30, 1);
  if($n1 > $m1) {
    $small = $m1;
  }
  else{
    $small = $n1;
  }
  $a1   =  random(2, $small, 1);
  $b1   =  random(2, $small, 1);
}

$a1n1 = $n1/gcd($a1, $n1);
$b1m1 = $m1/gcd($b1, $m1);
$answer1 = $a1n1 * $b1m1 / gcd($a1n1, $b1m1);

$b2   = random(2, $n1, 1);
while( gcd($b2, $n1)==1 ){
  $b2   = random(2, $n1, 1);
}
$a1m1 = $m1/gcd($a1, $m1);
$b2n1 = $n1/gcd($b2, $n1);
$answer2 = $a1m1 * $b2n1 / gcd($a1m1, $b2n1);


$orderb=1;
while( ($b1 ** $orderb)% $m1 >1 ) {
  $orderb++;
}
$answer3 = $a1n1 * $orderb / gcd($a1n1, $orderb);



$n2 = random(6, 12, 1);
$e1 = random(1, $n2-1, 1);

$e2 = random(0, 1, 1);
if($e2==1) {
  $answer4 = 2*$orderb / gcd(2, $orderb);
}
else {
  $t = $n2/(gcd($n2, $e1));
  $answer4 = $t * $orderb / gcd($t, $orderb);
}

$rand = random(0,5,1);
if($rand == 0){
    $e = i;
}
elsif($rand == 1){
    $e = j;
}
elsif($rand == 2){
    $e = k;
}
elsif($rand == 3){
    $e = Formula("-i");
}
elsif($rand == 4){
    $e = Formula("-j");
}
elsif($rand == 5){
    $e = Formula("-k");
}
$e3 = random(1, $n2-1, 1);
$e4 = random(0, 1, 1);


if($e4==1) {
  $answer5 = 4;
}
else {
  $t = $n2/(gcd($n2, $e3));
  $answer5 = $t * 4 / gcd($t, 4);
}



BEGIN_TEXT

