\}
\{
 row( "\( " . dihedral( $n2 ) . " \times U($m1) \)", "\( ( a^{$e1}b^{$e2}, $b1) \)", ans_rule(10) )
\}
\{
 row( "\( " . dihedral( $n2 ) . " \times " . quaternions( ) . " \)", "\( ( a^{$e3}b^{$e4}, $e ) \)", ans_rule(10) )
\}
