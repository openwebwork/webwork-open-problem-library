Context( )->strings->add( Y => {} );
Context( )->strings->add( N => {} );



TEXT(beginproblem());
$showPartialCorrectAnswers = 0;



#  In this problem we generate a random, non-identity element x of A_4.
#  and ask students to determine the conjugacy class and the centralizer
#  of x.

  @element = ( "(1,2,3)", "(1,3,2)", "(1,2,4)", "(1,4,2)", "(1,3,4)", "(1,4,3)", "(2,3,4)", "(2,4,3)", "(1,2),(3,4)", "(1,3),(2,4)", "(1,4),(2,3)");

  $i = random(0,10,1);
  $x = $element[$i];

  if( $i>7 ) {
    #
    # the conjugacy class of a product of disjoint 2-cycles in A_4
    # are these three disjoint product, and the centralizer is the
    # subgroup generated by these

    for($j=0;$j<8;$j++) {
      $class[$j] = N;    
      $central[$j] = N;    
    }
    for($j=8;$j<11;$j++) {
      $class[$j] = Y;    
      $central[$j] = Y;    
    }
  }
  else {
    #
    # the 3-cycles in A_4 fall into two conjugacy classes:
    #   (123), (243), (134), (142);
    #   (132), (234), (143), (124).

    for($j=8;$j<11;$j++) {
      $class[$j] = N;    
      $central[$j] = N;    
    }
    if($i==0 || $i==7 || $i==4 || $i==3) {
      for($j=0;$j<8;$j++) {
        if($j==0 || $j==7 || $j==4 || $j==3) {
	  $class[$j] = Y;    
	}
	else {
          $class[$j] = N;    
	}
      }
    }
    else {
      for($j=0;$j<8;$j++) {
        if($j==0 || $j==7 || $j==4 || $j==3) {
	  $class[$j] = N;    
	}
	else {
          $class[$j] = Y;    
	}
      }
    }

    # The centralizer is the subgroup generated by the 3-cycle.
    for($j=0;$j<11;$j++) {
      $central[$j]=N;
    }
    $central[$i]=Y;
    if($i==0) {
      $central[1]=Y;
    }
    if($i==1) {
      $central[0]=Y;
    }

    if($i==7) {
      $central[6]=Y;
    }
    if($i==6) {
      $central[7]=Y;
    }

    if($i==4) {
      $central[5]=Y;
    }
    if($i==5) {
      $central[4]=Y;
    }

    if($i==3) {
      $central[2]=Y;
    }
    if($i==2) {
      $central[3]=Y;
    }
  }    




  BEGIN_TEXT



  Determine which of the following elements of 
  \( A_4 \)
  belong to the conjugacy class and the centralizer of the element
  \(
    $x\in A_4
  \).
  Enter Y for yes and N for no.
  $BR $BR


  \{ begintable(3) \}
  \{ row( " ", "Conjugacy class", "Centralizer" )\}
  \{ row( "identity",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[0]",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[1]",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[2]",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[3]",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[4]",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[5]",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[6]",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[7]",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[8]",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[9]",     ans_rule(10),  ans_rule(10)) \}
  \{ row( "$element[10]",    ans_rule(10),  ans_rule(10)) \}
  \{ endtable() \}


  END_TEXT



  ANS( str_cmp("N") );
  ANS( str_cmp("Y") );

  ANS( str_cmp($class[0]) );
  ANS( str_cmp($central[0]) );

  ANS( str_cmp($class[1]) );
  ANS( str_cmp($central[1]) );

  ANS( str_cmp($class[2]) );
  ANS( str_cmp($central[2]) );

  ANS( str_cmp($class[3]) );
  ANS( str_cmp($central[3]) );

  ANS( str_cmp($class[4]) );
  ANS( str_cmp($central[4]) );

  ANS( str_cmp($class[5]) );
  ANS( str_cmp($central[5]) );

  ANS( str_cmp($class[6]) );
  ANS( str_cmp($central[6]) );

  ANS( str_cmp($class[7]) );
  ANS( str_cmp($central[7]) );

  ANS( str_cmp($class[8]) );
  ANS( str_cmp($central[8]) );

  ANS( str_cmp($class[9]) );
  ANS( str_cmp($central[9]) );

  ANS( str_cmp($class[10]) );
  ANS( str_cmp($central[10]) );



COMMENT("In this problem the group is fixed and the element is randomized.");

