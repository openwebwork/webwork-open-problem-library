DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGstandard.pl",
"MathObjects.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"algebraMacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

Context()->strings->add(i=>{});
Context()->strings->add(j=>{});
Context()->strings->add(k=>{});
Context()->strings->add("-i"=>{});
Context()->strings->add("-j"=>{});
Context()->strings->add("-k"=>{});

@set = (-1, "-i", "-j", "-k", i, j, k);
$r = random(0,6,1);
$X = $set[$r];

if($r == 0){
    $ans = -1;
}
elsif($r == 1 || $r == 4){
    @seq = ("-i", i);
}
elsif($r == 2 || $r == 5){
    @seq = ("-j", j);
}
elsif($r == 3 || $r == 6){
    @seq = ("-k", k);
}

$ans = join(", ",@seq);
$ans = Compute("$ans");


BEGIN_TEXT

Write down all the elements of \( \{ quaternions( ) \} \) that are conjuagate to \($X\). $BR $BR

\{ans_rule(10)\} $BR $BR


END_TEXT

if($r == 0){
    ANS(num_cmp( $ans ));
}
else{
    ANS( $ans->cmp(unordered=>1) );
}




COMMENT("");




ENDDOCUMENT();  