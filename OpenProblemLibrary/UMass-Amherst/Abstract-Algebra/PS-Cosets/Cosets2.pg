$q = random(0,8,1);

if($q == 0){
    @set = (i, j, j, "-j", k, "-k");
}
elsif($q == 1){
    @set = (i,"-i", i,"-i",-1, 1);
}
elsif($q == 2){
    @set = (i,"-k","-k", k, j,"-j");
}
elsif($q == 3){
    @set = (j,"-i","-i", i, k,"-k");
}
elsif($q == 4){
    @set = (j, k, k, "-k", i,"-i");
}
elsif($q == 5){
    @set = (k, i, i,"-i", j,"-j");
}
elsif($q == 6){
    @set = (k, k, 1,-1, k,"-k");
}
elsif($q == 7){
    @set = (-1, j,"-j", j);
}
elsif($q == 8){
    @set = (-1, k,"-k", k);
}

@ans2 = ();
$count = 0;

for($i=2;$i<scalar(@set);$i++){
    @ans2[$count] = $set[$i];
    $count++;
}

if($q < 7){
    $answer2 = List($set[2], $set[3], $set[4], $set[5]);
}
else{
    $answer2 = List($set[2], $set[3]);
}

