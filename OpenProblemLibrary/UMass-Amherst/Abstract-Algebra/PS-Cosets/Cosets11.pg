\{ row( "\(U($n)\)", "\(\langle $k \pmod{$n} \rangle\)", "\($a\)", "\($b\)", ans_rule(10)  )\}
\{ row( "\(" . quaternions() . "\)", "\(\langle $c \rangle\)", "\($d\)", "\($e\)", ans_rule(10) )\}
\{ row( "\(" . quaternions() . "\)", "\(\langle -1 \rangle\)", "\($f\)", "\($g\)", ans_rule(10) )\}

\{ endtable() \} $BR $BR



$END_ONE_COLUMN

