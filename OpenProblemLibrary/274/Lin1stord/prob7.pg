DOCUMENT() ; 

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()) ;

$showPartialCorrectAnswers = 1 ;
$k =random(.1,.9,.1) ;
$p = random(2,9,1) ;
$m = random(1,9,1) ;
$c = ($m - ($p / $k)) ;

BEGIN_TEXT

Solve the following initial value problem: $BR
\[ \frac{dy}{dt} + $k ty = $p t  \] with \( y(0) = $m  .\) $BR
\(y = \) \{ans_rule(50) \}. $BR

END_TEXT

$ans = " ($p / $k ) + $c * exp( -$k * t * t /2)" ;


ANS(fun_cmp($ans, vars=>"t")) ;

ENDDOCUMENT() ;        # the last executable line
