## DESCRIPTION
## Asks to determine whether or a rational function is even odd or neither
## ENDDESCRIPTION


## DBsubject(Algebra)
## DBchapter(Transformations of functions and graphs)
## DBsection(Symmetry: even, odd, neither)
## Date(Spring 2012)
## Institution(University of Missouri)
## Author(Rick Lynch)
## MLT(OPL6eon)
## Level(3)
## TitleText1('College Algebra')
## AuthorText1('Beecher, Penna, Bittinger')
## EditionText1('4')
## Section1('2.4')
## Problem1('')
## KEYWORDS('algebra', 'piecewise', 'function')

########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


#######################################
#  Set-up
Context("Numeric");
Context()->strings->add("even"=>{}, "odd"=>{}, "neither"=>{});

## Coeffcicients
$eoot = random(0,1,1);
if ($eoot == 0) {
  $degt = random(2,4,2);
} elsif ($eoot == 1) {
  $degt = random(3,5,2);
} else {
  $degt = random(2,4,1);
}
@ct = (0..$degt);

for ($i = 0; $i <= $degt; $i++) {
  if ($i == $degt) {
    $ct[$i] = random(1,6);
  } elsif ($i % 2 == 0) {
    if ($eoot == 0 || $eoot == 2) {
      $ct[$i] = non_zero_random(-6,6);
    } else {
      $ct[$i] = 0;
    }
  } elsif ($i % 2 == 1) {
    if ($eoot == 1 || $eoot == 2) {
      $ct[$i] = non_zero_random(-6,6);
    } else {
      $ct[$i] = 0;
    }
  }
}

$dispfunt = "";
$dispansfunt = "";
$ansfunt = "";
for ($i = $degt; $i >= 0; $i--) {
  if ($i == 0) {
    if ($ct[$i] != 0) {
      $dispfunt = ($dispfunt)."+$ct[$i]";
      $dispansfunt = ($dispansfunt)."+$ct[$i]";
    }
  } elsif ($i == $degt) {
    if ($ct[$i] == 1) {
      $dispfunt = ($dispfunt)." x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunt = ($dispansfunt)."x^{$i}";
      } else {
        $dispansfunt = ($dispansfunt)."- x^{$i}";
      }      
    } elsif ($ct[$i] == -1) {
      $dispfunt = ($dispfunt)."- x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunt = ($dispansfunt)."- x^{$i}";
      } else {
        $dispansfunt = ($dispansfunt)."x^{$i}";
      }
    } else {
      $dispfunt = ($dispfunt)."$ct[$i] x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunt = ($dispansfunt)."$ct[$i] x^{$i}";
      } else {
        $dispansfunt = ($dispansfunt)."-$ct[$i] x^{$i}";
      }
    }
  } elsif ($i == 1) {
    if ($ct[$i] == -1) {
      $dispfunt = ($dispfunt)."- x";
      if ($i % 2 == 0) {
        $dispansfunt = ($dispansfunt)."- x";
      } else {
        $dispansfunt = ($dispansfunt)."+ x";
      }
    } elsif ($ct[$i] == 1) {
      $dispfunt = ($dispfunt)."+ x";
      if ($i % 2 == 0) {
        $dispansfunt = ($dispansfunt)."+ x";
      } else {
        $dispansfunt = ($dispansfunt)."- x";
      }
    } elsif ($ct[$i] != 0) {
      $dispfunt = ($dispfunt)."+ $ct[$i] x";
      if ($i % 2 == 0) {
        $dispansfunt = ($dispansfunt)."+ $ct[$i] x";
      } else {
        $dispansfunt = ($dispansfunt)."- $ct[$i] x";
      }
    }
  } else {
    if ($ct[$i] == -1) {
      $dispfunt = ($dispfunt)."- x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunt = ($dispansfunt)."- x^{$i}";
      } else {
        $dispansfunt = ($dispansfunt)."+ x^{$i}";
      }
    } elsif ($ct[$i] == 1) {
      $dispfunt = ($dispfunt)."+ x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunt = ($dispansfunt)."+ x^{$i}";
      } else {
        $dispansfunt = ($dispansfunt)."- x^{$i}";
      }
    } elsif ($ct[$i] != 0) {
      $dispfunt = ($dispfunt)."+ $ct[$i] x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunt = ($dispansfunt)."+ $ct[$i] x^{$i}";
      } else {
        $dispansfunt = ($dispansfunt)."- $ct[$i] x^{$i}";
      }
    }
  }
  $ansfunt = ($ansfunt)."+$ct[$i] ((-x)**($i))";
}

$eoob = random(0,1,1);
if ($eoob == 0) {
  $degb = random(2,4,2);
} elsif ($eoob == 1) {
  $degb = random(3,5,2);
} else {
  $degb = random(2,4,1);
}
@cb = (0..$degb);

for ($i = 0; $i <= $degb; $i++) {
  if ($i == $degb) {
    do {$cb[$i] = random(1,6)} until ($cb[$i] != $ct[scalar(@ct)-1]);
  } elsif ($i % 2 == 0) {
    if ($eoob == 0 || $eoob == 2) {
      $cb[$i] = non_zero_random(-6,6);
    } else {
      $cb[$i] = 0;
    }
  } elsif ($i % 2 == 1) {
    if ($eoob == 1 || $eoob == 2) {
      $cb[$i] = non_zero_random(-6,6);
    } else {
      $cb[$i] = 0;
    }
  }
}

$dispfunb = "";
$dispansfunb = "";
$ansfunb = "";
for ($i = $degb; $i >= 0; $i--) {
  if ($i == 0) {
    if ($cb[$i] != 0) {
      $dispfunb = ($dispfunb)."+$cb[$i]";
      $dispansfunb = ($dispansfunb)."+$cb[$i]";
    }
  } elsif ($i == $degb) {
    if ($cb[$i] == 1) {
      $dispfunb = ($dispfunb)." x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunb = ($dispansfunb)."x^{$i}";
      } else {
        $dispansfunb = ($dispansfunb)."- x^{$i}";
      }      
    } elsif ($cb[$i] == -1) {
      $dispfunb = ($dispfunb)."- x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunb = ($dispansfunb)."- x^{$i}";
      } else {
        $dispansfunb = ($dispansfunb)."x^{$i}";
      }
    } else {
      $dispfunb = ($dispfunb)."$cb[$i] x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunb = ($dispansfunb)."$cb[$i] x^{$i}";
      } else {
        $dispansfunb = ($dispansfunb)."-$cb[$i] x^{$i}";
      }
    }
  } elsif ($i == 1) {
    if ($cb[$i] == -1) {
      $dispfunb = ($dispfunb)."- x";
      if ($i % 2 == 0) {
        $dispansfunb = ($dispansfunb)."- x";
      } else {
        $dispansfunb = ($dispansfunb)."+ x";
      }
    } elsif ($cb[$i] == 1) {
      $dispfunb = ($dispfunb)."+ x";
      if ($i % 2 == 0) {
        $dispansfunb = ($dispansfunb)."+ x";
      } else {
        $dispansfunb = ($dispansfunb)."- x";
      }
    } elsif ($cb[$i] != 0) {
      $dispfunb = ($dispfunb)."+ $cb[$i] x";
      if ($i % 2 == 0) {
        $dispansfunb = ($dispansfunb)."+ $cb[$i] x";
      } else {
        $dispansfunb = ($dispansfunb)."- $cb[$i] x";
      }
    }
  } else {
    if ($cb[$i] == -1) {
      $dispfunb = ($dispfunb)."- x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunb = ($dispansfunb)."- x^{$i}";
      } else {
        $dispansfunb = ($dispansfunb)."+ x^{$i}";
      }
    } elsif ($cb[$i] == 1) {
      $dispfunb = ($dispfunb)."+ x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunb = ($dispansfunb)."+ x^{$i}";
      } else {
        $dispansfunb = ($dispansfunb)."- x^{$i}";
      }
    } elsif ($cb[$i] != 0) {
      $dispfunb = ($dispfunb)."+ $cb[$i] x^{$i}";
      if ($i % 2 == 0) {
        $dispansfunb = ($dispansfunb)."+ $cb[$i] x^{$i}";
      } else {
        $dispansfunb = ($dispansfunb)."- $cb[$i] x^{$i}";
      }
    }
  }
  $ansfunb = ($ansfunb)."+$cb[$i] ((-x)**($i))";
}

$ansfun = Formula("($ansfunt)/($ansfunb)")->reduce;
$dispfun = "\frac{$dispfunt}{$dispfunb}";
if (($eoot+$eoob) % 2 == 0) {
  $dispansfun = $dispfun;
  $anseoo = "even";
} elsif (($eoot+$eoob) % 2 == 1) {
  $dispansfun = "-\left(".($dispfun)."\right)";
  $anseoo = "odd";
} else {
  $anseoo = "neither";
}


################################################
#  Main text

BEGIN_TEXT
Let \(f(x) = \displaystyle $dispfun\). 
$PAR
Determine \(f(-x)\) first and then determine whether the function is even, odd, or neither. Write ${BBOLD}even${EBOLD} if the function is even, ${BBOLD}odd${EBOLD} if the function is odd, and ${BBOLD}neither${EBOLD} if the function is neither even nor odd.
$PAR
\(f(-x) =\) \{ans_rule(20)\}
$PAR
Even/Odd/Neither: \{ans_rule(20)\}
END_TEXT



################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute($ansfun)->cmp() );
ANS( String($anseoo)->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();
