##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real");

$var = list_random('x','y','z','w','u','v');
do {
$a = random(4,5,1);
$d = random(3,7,2);
$c = $a + $d;
$b = floor( ($a + $c)/2 ) - 1;

$case = random(1,4,1);

######endpoints
Context("Fraction-NoDecimals");
$end1 = Fraction($a*$b - $b*$c,$c + $a - 2*$b);
$end2 = -$b;
$end3 = $b;
} until ($end1 < $end2 && $end2 < $end3);

Context("Interval");
if($case == 1){
   $string = '<';
   $ans = Compute( "(-inf,$end1) U ($end2,$end3)" ) ;}
elsif($case ==2){
   $string = '\leq';
   $ans = Compute( "(-inf, $end1] U($end2,$end3)" ) ;}
elsif($case == 3){
   $string = '>';
   $ans = Compute( "($end1,$end2) U ($end3,inf)" ) ;}
elsif($case ==4){
   $string = '\geq';
   $ans = Compute( "[$end1,$end2) U ($end3,inf)" ) ;}

ANS( Compute($ans)-> cmp() );

$ineq = " \frac{ $var + $a }{ $var + $b } - \frac{ $var - $c }{ $var - $b } $string 0 ";



##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
Answer: \{ANS_RULE(10)\}

END_TEXT

Context()->normalStrings;

$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Random inequality sign, any of <,>,<=,>=');
ENDDOCUMENT();
