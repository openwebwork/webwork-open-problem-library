##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real");

$var = list_random('x','y','z','w','u','v');

$a = random(3,10,1);
$b = random(3,10,1);
$c = random(3,10,1);

$case = random(1,4,1);

######endpoints
$end1 = -$c;
$end2 = 0;
$end3 = $b;

Context("Interval");
if($case == 1){
   $string = '<';
   $ans = Compute( "(-inf,$end1) U ($end2,$end3)" ) ;}
elsif($case ==2){
   $string = '\leq';
   $ans = Compute( "(-inf, $end1) U[$end2,$end3)" ) ;}
elsif($case == 3){
   $string = '>';
   $ans = Compute( "($end1,$end2) U ($end3,inf)" ) ;}
elsif($case ==4){
   $string = '\geq';
   $ans = Compute( "($end1,$end2] U ($end3,inf)" ) ;}

ANS( Compute($ans)-> cmp() );

$ineq = " \frac{$a $var}{($var - $b)($var + $c)} $string 0 ";



##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
Answer: \{ANS_RULE(10)\}

END_TEXT

Context()->normalStrings;

$showPartialCorrectAnswers = 1;

COMMENT('MathObject version');
ENDDOCUMENT();
