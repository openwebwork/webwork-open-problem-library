##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###################################
# Setup

Context("Fraction-NoDecimals");

$a = random(2,7,1);
$b = random(1,2,1);

$b4 = 4 * $b;

$var = "x";
$eqn = "$a x = \frac{1}{2} \left( 2x - $b4 \right) - \frac{5}{4} \left( x + $b4 \right)";

$num = -28 * $b;
$den = 4*$a + 1;

$answer = Fraction($num,$den);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var\):
$PAR
\[
$eqn
\]
$PAR
\( $var = \)
\{ ans_rule(20) \}
\{ AnswerFormatHelp("fraction") \}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );

ENDDOCUMENT();