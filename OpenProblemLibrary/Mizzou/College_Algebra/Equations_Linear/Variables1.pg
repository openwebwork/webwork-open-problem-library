#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################################
# Setup

Context("Numeric");
Context()->variables->are(w=>"Real",k=>"Real",m=>"Real",p=>"Real");

$a = random(2,9,1);
$b = random(2,9,1);

$var = "w";
$eqn = "$a w + $b k + m = p";

$answer = Formula("(p - $b k - m)/$a");
$texanswer = "\($var= \dfrac{p - $b k - m}{$a} \)";

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the following equation for \($var\):
\[
$eqn .
\]
\( $var = \)
\{ ans_rule(20) \}

END_TEXT

###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS($answer->cmp(studentsMustReduceFractions=>1) );

ENDDOCUMENT();
