#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###################################
# Setup

Context("Fraction-NoDecimals");

$a = random(2,10,1);
$b = random(2,10,1);
do {$c = random(2,10,1)} until ($a != $c);
$d = random(2,10,1);

$b4 = 4 * $b;

$var = "x";
$eqn = "$a (x  + $b)= $c x + $d";

$num = $d - $a*$b;
$den = $a - $c;

$answer = Fraction($num,$den);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var\):
$PAR
\[
$eqn
\]
$PAR
\( $var = \)
\{ ans_rule(20) \}
\{ helpLink("fraction") \}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );

ENDDOCUMENT();