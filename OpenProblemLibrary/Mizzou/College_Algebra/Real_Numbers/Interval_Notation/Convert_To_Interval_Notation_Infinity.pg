# DESCRIPTION
# Asks to convert given set notation to interval notation, always inf endpt.
# ENDDESCRIPTION

## Author1('Rick Lynch')
## Author2('David Covert')
## Author3('Teri Christiansen')
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Inequalities and intervals)
## Institution(University of Missouri-Columbia)
## MLT(alg_real_num_2015_setbuilder_to_interval)
## Level(3)
## KEYWORDS('interval notation', 'sets')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Interval");
$a = random(-100,100,1);
$case = random(1,4,1);
if ($case == 1) {
  $dispineq = "x < $a";
  $ans = Compute("(-inf,$a)");
} elsif ($case == 2) {
  $dispineq = "x \leq $a";
  $ans = Compute("(-inf,$a]");
} elsif ($case == 3) {
  $dispineq = "x > $a";
  $ans = Compute("($a,inf)");
} elsif ($case == 4) {
  $dispineq = "x \geq $a";
  $ans = Compute("[$a,inf)");
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Write in interval notation: \(${LBRACE} x \mbox{ }|\mbox{ } $dispineq ${RBRACE}\)
$PAR
Answer: \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());

  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{AnswerFormatHelp("intervals", "Click here for help entering intervals as answers.")\}
  $BR
  END_TEXT

COMMENT('Desc: Asks to convert given set notation to interval notation, always inf endpt.');
ENDDOCUMENT();