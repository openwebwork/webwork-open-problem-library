# DESCRIPTION
# Asks to convert given set notation to interval notation, all possibilities.
# ENDDESCRIPTION

## Author1('Rick Lynch')
## Author2('David Covert')
## Author3('Teri Christiansen')
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Inequalities and intervals)
## Institution(University of Missouri-Columbia)
## MLT(alg_real_num_2015_setbuilder_to_interval)
## Level(3)
## KEYWORDS('interval notation', 'sets')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Interval");
$a = random(-100,-15,1);
$b = random($a+10,100,1);
$case = random(1,12,1);
if ($case == 1) {
  $dispineq = "$a < x < $b";
  $ans = Compute("($a,$b)");
} elsif ($case == 2) {
  $dispineq = "$a \leq x < $b";
  $ans = Compute("[$a,$b)");
} elsif ($case == 3) {
  $dispineq = "$a < x \leq $b";
  $ans = Compute("($a,$b]");
} elsif ($case == 4) {
  $dispineq = "$a \leq x \leq $b";
  $ans = Compute("[$a,$b]");
} elsif ($case == 5) {
  $dispineq = "$a < x < $b";
  $ans = Compute("($a,$b)");
} elsif ($case == 6) {
  $dispineq = "$a \leq x < $b";
  $ans = Compute("[$a,$b)");
} elsif ($case == 7) {
  $dispineq = "$a < x \leq $b";
  $ans = Compute("($a,$b]");
} elsif ($case == 8) {
  $dispineq = "$a \leq x \leq $b";
  $ans = Compute("[$a,$b]");
} elsif ($case == 9) {
  $dispineq = "x < $a";
  $ans = Compute("(-inf,$a)");
} elsif ($case == 10) {
  $dispineq = "x \leq $a";
  $ans = Compute("(-inf,$a]");
} elsif ($case == 11) {
  $dispineq = "x > $a";
  $ans = Compute("($a,inf)");
} elsif ($case == 12) {
  $dispineq = "x \geq $a";
  $ans = Compute("[$a,inf)");
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Write in interval notation: \(${LBRACE} x \mbox{ }|\mbox{ } $dispineq ${RBRACE}\)
$PAR
Answer: \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());

Context()->normalStrings;

COMMENT('Desc: Asks to convert given set notation to interval notation, all possibilities.');
ENDDOCUMENT();