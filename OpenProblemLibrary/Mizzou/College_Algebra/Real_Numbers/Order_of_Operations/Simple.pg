# DESCRIPTION
# Asks to compute using order of operations, no fractions, basic
# ENDDESCRIPTION

## Author1('Rick Lynch')
## Author2('David Covert')
## Author3('Teri Christiansen')
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Evaluating expressions)
## Institution(University of Missouri-Columbia)
## MLT(alg_real_num_2015_evaluate_harder)
## Level(2)
## KEYWORDS('order of operations')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = random(4,8,1);
$b = random(2,5,1);
$c = random(2,4,1);
$d = random(2,4,1);
$e = random(3,6,1);
$f = random(2,10,1);
$g = random(2,10,1);
$disp = "$a \cdot $b - $c \cdot $d^2 + $e ($f - $g)";
$ans = Compute("$a*$b - $c*$d*$d + $e*($f - $g)")->reduce;
Context()->operators->undefine("*","/","-","+","^","**");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Evaluate: \($disp\)
$PAR
Answer: \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($ans)->cmp());

ENDDOCUMENT();
