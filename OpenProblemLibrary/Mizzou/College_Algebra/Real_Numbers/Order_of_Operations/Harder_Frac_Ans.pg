# DESCRIPTION
# Asks to compute using order of operations, fraction as answer
# ENDDESCRIPTION

## Author1('Rick Lynch')
## Author2('David Covert')
## Author3('Teri Christiansen')
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Evaluating expressions)
## Institution(University of Missouri-Columbia)
## MLT(alg_real_num_2015_evaluate_harder)
## Level(3)
## KEYWORDS('order of operations')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction-NoDecimals");
$a = random(-2,2,4);
$b = random(2,5,1);
$c = $b - random(6,8,1);
$d = 2*$a;
$e = random(3,6,1);
$f = 3*$a;
$g = random(2,5,1);
$disp = "\displaystyle\frac{$a($b - ($c))^2 -$d \cdot $e + $f \cdot $g}{$a(3^2 + 1)^2}";
$ans = Compute("($a*(($b - ($c)))**2 -$d *$e + $f *$g)/($a*((3**2 + 1)**2))")->reduce;
Context()->operators->undefine("*","-","+","^","**");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Evaluate: \($disp\)
$PAR
Answer: \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($ans)->cmp(studentsMustReduceFractions=>1));

COMMENT('Accepts only fractions.');
ENDDOCUMENT();
