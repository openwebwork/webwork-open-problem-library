Context("Numeric");
$A = new Matrix(3,3);
$B = new Matrix(3,3);
$C = new Matrix(6,6);

do {
  $a11 = non_zero_random(-5,5,1);
  $a21 = non_zero_random(-5,5,1); 
  $a31 = non_zero_random(1,5,1);

  $b = non_zero_random(-3,3,1);
  $a12 = $b * $a11;
  $m = random(-1,1,2);
  $a22 = $b * $a21 + $m;
  $a32 = $b * $a31;

  $c = random(-3,3,1);
  $d = random(-3,3,1);
  $n = random(-1,1,2);
  $detA = - $a31 * $m * $n;
  $a13 = ($c * $a11 + $d * $a12 + $n);
  $a23 = ($c * $a21 + $d * $a22);
  $a33 = ($c * $a31 + $d * $a32);

  $a11 = $a11/$detA;
  $a12 = $a12/$detA;
  $a13 = $a13/$detA;
} until ($a22 != 0 && $a13 != 0 && $a23 != 0 && $a33 != 0 && $a11 == floor($a11) && $a12 == floor($a12) && $a13 == floor($a13));

do {
  $b11 = non_zero_random(-5,5,1);
  $b21 = non_zero_random(-5,5,1); 
  $b31 = non_zero_random(1,5,1);

  $b = non_zero_random(-3,3,1);
  $b12 = $b * $b11;
  $m = random(-1,1,2);
  $b22 = $b * $b21 + $m;
  $b32 = $b * $b31;

  $c = random(-3,3,1);
  $d = random(-3,3,1);
  $n = random(-1,1,2);
  $detB = - $b31 * $m * $n;
  $b13 = ($c * $b11 + $d * $b12 + $n);
  $b23 = ($c * $b21 + $d * $b22);
  $b33 = ($c * $b31 + $d * $b32);

  $b11 = $b11/$detB;
  $b12 = $b12/$detB;
  $b13 = $b13/$detB;
} until ($b22 != 0 && $b13 != 0 && $b23 != 0 && $b33 != 0 && $b11 == floor($b11) && $b12 == floor($b12) && $b13 == floor($b13));

$ansa11 = ($a22 * $a33 - $a23 * $a32);
$ansa12 = - ($a12 * $a33 - $a13 * $a32);
$ansa13 = ($a12 * $a23 - $a13 * $a22);
$ansa21 = - ($a21 * $a33 - $a23 * $a31);
$ansa22 = ($a11 * $a33 - $a13 * $a31);
$ansa23 = - ($a11 * $a23 - $a13 * $a21);
$ansa31 = ($a21 * $a32 - $a22 * $a31);
$ansa32 = - ($a11 * $a32 - $a12 * $a31);
$ansa33 = ($a11 * $a22 - $a12 * $a21);

$ansb11 = ($b22 * $b33 - $b23 * $b32);
$ansb12 = - ($b12 * $b33 - $b13 * $b32);
$ansb13 = ($b12 * $b23 - $b13 * $b22);
$ansb21 = - ($b21 * $b33 - $b23 * $b31);
$ansb22 = ($b11 * $b33 - $b13 * $b31);
$ansb23 = - ($b11 * $b23 - $b13 * $b21);
$ansb31 = ($b21 * $b32 - $b22 * $b31);
$ansb32 = - ($b11 * $b32 - $b12 * $b31);
$ansb33 = ($b11 * $b22 - $b12 * $b21);

$A->assign(1,1,$ansa11);
$A->assign(1,2,$ansa12);
$A->assign(1,3,$ansa13);
$A->assign(2,1,$ansa21);
$A->assign(2,2,$ansa22);
$A->assign(2,3,$ansa23);
$A->assign(3,1,$ansa31);
$A->assign(3,2,$ansa32);
$A->assign(3,3,$ansa33);

$B->assign(1,1,$ansb11);
$B->assign(1,2,$ansb12);
$B->assign(1,3,$ansb13);
$B->assign(2,1,$ansb21);
$B->assign(2,2,$ansb22);
$B->assign(2,3,$ansb23);
$B->assign(3,1,$ansb31);
$B->assign(3,2,$ansb32);
$B->assign(3,3,$ansb33);


