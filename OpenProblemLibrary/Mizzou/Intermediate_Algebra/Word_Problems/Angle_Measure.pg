# DESCRIPTION
# Asks to find angle measures based on what is given.
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Linear equations and functions)
## DBsection(Applications and models)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## Level(5)
## TitleText1('College Algebra')
## AuthorText1('Beecher, Penna, Bittinger')
## EditionText1('4')
## Section1('1.5')
## Problem1('49 50')
## KEYWORDS('functions', 'algebra, application of linear equations')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
  "contextCurrency.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
do {
  $times = random(2,5,1);
  $moreless = random(0,1,1);
  $cmoreless = random(2,20,1);
  if ($moreless == 0) {
    $A = (180 + $cmoreless)/(2 + $times);
    $mlstring = "less";
    $C = $A - $cmoreless;
  } else {
    $A = (180 - $cmoreless)/(2 + $times);
    $mlstring = "more";
    $C = $A + $cmoreless;
  }
} until ($A == floor($A));

if ($times == 2) {
  $tstring = "twice";
} elsif ($times == 3) {
  $tstring = "three times";
} elsif ($times == 4) {
  $tstring = "four times";
} else {
  $tstring = "five times";
}
$B = $times*$A;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
In triangle \(ABC\), angle \(B\) is $tstring as large as angle \(A\). The measure of angle \(C\) is \($cmoreless^{\circ}\) $mlstring than that of angle \(A\). Find the measures of the angles.
$PAR
\(A\): \{ans_rule(6)\} degrees
$BR
\(B\): \{ans_rule(6)\} degrees
$BR
\(C\): \{ans_rule(6)\} degrees
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($A)->cmp());
ANS(Compute($B)->cmp());
ANS(Compute($C)->cmp());


Context()->normalStrings;

ENDDOCUMENT();