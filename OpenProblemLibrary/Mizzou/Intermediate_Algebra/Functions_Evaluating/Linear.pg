# DESCRIPTION
# Asks to evaluate points using a linear function
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Functions)
## DBsection(Function notation)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(SimplePolyAtIntValues)
## Level(2)
## KEYWORDS('algebra', 'functions')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = 0; non_zero_random(-5,5,1);
$b = non_zero_random(-7,7);
$c = ($b == 0) ? non_zero_random(-7,7) : random(-7,7);
$f = Formula("$a x^2 + $b x + $c")->reduce;

$dispf = "";
if ($b == 1) {
  $dispf = $dispf." x";
} elsif ($b == -1) {
  $dispf = $dispf."-x";
} elsif ($b != 0) {
  $dispf = $dispf."$b x";
}

if ($c != 0) {
  $dispf = $dispf."+$c";
}
$x0 = random(-15,15);
do {$x1 = random(-15,15)} until ($x1 != $x0);
do {$x2 = random(-15,15)} until ($x2 != $x0 && $x2 != $x1);
$y0 = $f->eval(x=>$x0);
$y1 = $f->eval(x=>$x1);
$y2 = $f->eval(x=>$x2);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
If \(f(x) = $dispf\), find the following:
$PAR
(a) \(f($x0)=\) \{ans_rule(10)\}
$PAR
(b) \(f($x1)=\) \{ans_rule(10)\}
$PAR
(c) \(f($x2)=\) \{ans_rule(10)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($y0)->cmp());
ANS(Compute($y1)->cmp());
ANS(Compute($y2)->cmp());


Context()->normalStrings;

ENDDOCUMENT();
