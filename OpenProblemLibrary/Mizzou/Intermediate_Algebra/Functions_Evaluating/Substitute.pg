# DESCRIPTION
# Asks to find P(a), P(-x), and P(x+h) given a linear polynomial of form ax + b
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Functions)
## DBsection(Function notation)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(PolyMixedInput)
## Level(2)
## KEYWORDS('polynomials')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedPolynomial-Strict");
$a = random(2,10)*random(-1,1,2);
$b = random(-10,10);
if ($b == 0) {
  $dp = "$a x";
} else {
  $dp = "$a x + $b";
}

Context()->variables->are(x=>"Real", h=>"Real", a=>"Real");
$ansa = Formula("$a a + $b")->reduce;
$ansb = Formula("-$a x + $b")->reduce;
$ansc = Formula("$a x + $a h + $b")->reduce;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
If \(P(x) = $dp\), find the following.
$PAR
(a) \(P(a) = \) \{ans_rule(20)\}
$PAR
(a) \(P(-x) = \) \{ans_rule(20)\}
$PAR
(a) \(P(x+h) = \) \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ansa->cmp());
ANS($ansb->cmp());
ANS($ansc->cmp());

Context()->normalStrings;

ENDDOCUMENT();
