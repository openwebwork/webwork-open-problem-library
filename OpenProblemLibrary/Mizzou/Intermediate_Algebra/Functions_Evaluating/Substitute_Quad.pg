# DESCRIPTION
# Asks to find f(x+a), f(a), and f(x+a) - f(a) given a quadratic w/ lead coeff 1
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Functions)
## DBsection(Function notation)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(BuildToDerivDefn)
## Level(3)
## KEYWORDS('polynomials')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedPolynomial-Strict");
Context()->variables->are(x=>"Real", a=>"Real");
$b = non_zero_random(-7,7);
$c = non_zero_random(-9,9);
$f = Formula("x^2 + $b x + $c")->reduce;

$ansa = Formula("x^2 + 2 xa + a^2 + $b x + $b a + $c")->reduce;
$ansb = Formula("a^2 + $b a + $c")->reduce;
$ansc = Formula("x^2 + 2 x a + $b x")->reduce;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
If \(f(x) = $f\), find the following.
$PAR
(a) \(f(x+a) = \) \{ans_rule(25)\}
$PAR
(b) \(f(a) = \) \{ans_rule(25)\}
$PAR
(c) \(f(x+a) - f(a) = \) \{ans_rule(25)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ansa->cmp());
ANS($ansb->cmp());
ANS($ansc->cmp());

Context()->normalStrings;

ENDDOCUMENT();
