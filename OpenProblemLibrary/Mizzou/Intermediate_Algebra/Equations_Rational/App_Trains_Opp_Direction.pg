# DESCRIPTION
# Asks to solve the given word problem
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Rational equations and functions)
## DBsection(Applications and models)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(SlowerFaster)
## Level(5)
## KEYWORDS('rational','applications','equations')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = random(20,50,5);
$b = $a + random(5,35,5);
$c = $b - $a;
$t = random(4,9);
$d = $t*($a+$b);
$case = random(0,1,1);

$word = ($case == 0) ? "slower" : "faster";
$ans = List($a,$b);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Two trains going in opposite directions leave the same station at the same time. One train travels \($c\) mph $word than the other. In \($t\) hours the trains are \($d\) miles apart. Find the speed of each train.
$PAR
Speed of the slower train: \{ans_rule(15)\} mph
$BR
Speed of the faster train: \{ans_rule(15)\} mph
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute("$a")->cmp());
ANS(Compute("$b")->cmp());

ENDDOCUMENT();
