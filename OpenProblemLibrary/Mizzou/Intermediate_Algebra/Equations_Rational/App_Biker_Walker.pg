# DESCRIPTION
# Asks to solve the given word problem
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Rational equations and functions)
## DBsection(Applications and models)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(SlowerFaster)
## Level(5)
## KEYWORDS('rational','applications','equations')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = random(2,7);
$b = max(10, $a + random(5,15));
$c = $b - $a;
$word = ($a < 5) ? "walker" : "jogger";
$t = random(2,6);
$da = $a*$t;
$db = $b*$t;
$choice = random(0,1,1);
$answord = ($choice == 1) ? $word : "bicyclist";
$ans = ($choice == 1) ? $a : $b;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
The speed of a bicyclist is \($c\) mph faster than the speed of a $word. If the bicyclist travels \($db\) miles in the same amount of time that the $word travels \($da\) miles, find the speed of the $answord.
$PAR
Answer: \{ans_rule(15)\} mph
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute("$ans")->cmp());


ENDDOCUMENT();
