##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"parserMultiAnswer.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###################################
# Setup
Context()->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('x','y','z','w','p','q','r','s','t','u','v');

$a = random(-1,1,2)*random(2,4,1);
do {$b = non_zero_random(-6,6,1)} until ( $a +$b < -1 && $b != $a);
$c = - $a - $b;
$a2 = $a**2;



$ans = Compute(" - $b ") ;
ANS(Compute($ans) -> cmp() );

$eqn = " \frac{$var}{$var + $a} - \frac{$c}{$var} = \frac{$a2}{$var^2 + $a $var}";

##########################################

Context()->texStrings;
BEGIN_TEXT
$PAR
Solve the following equation for \($var\):
$PAR
\[
$eqn
\]
$PAR
\( $var = \) \{ ANS_RULE(20) \}
$PAR
END_TEXT


  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} If there is more than one correct answer, enter your answers as a comma separated list. If the equation has no real solution, write ${LQ}No Solution.${RQ}
  $BR
  END_TEXT

$showPartialCorrectAnswers = 1;

ENDDOCUMENT();