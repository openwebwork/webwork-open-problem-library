###################################
# Setup
Context()->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('x','y','z','w','p','q','r','s','t','u','v');

$a = random(-1,1,2)*random(2,5,1);
$b = random(-1,1,2)*random(2,5,1);
$ab = $a*$b;
do {$c = random(-1,1,2)*random(2,5,1)} until (abs($c-$a) != abs($b));
$a2 = $a**2;



$ans = Compute(" $c - $a ") ;
ANS(Compute($ans) -> cmp() );

#$eqn = " \frac{ $var^2 + $ab }{($var + $a)($var - $b)}  + \frac{$var}{$b - $var}= \frac{$var - $c}{$var + $a}";

$eqn = " \frac{ $var^2 + $ab }{$var^2";
if ($a - $b == 1) {
  $eqn = ($eqn)."+ $var - ".($a*$b)."}";
} elsif ($a - $b == -1) {
  $eqn = ($eqn)."- $var - ".($a*$b)."}";
} elsif ($a - $b == 0) {
  $eqn = ($eqn)."-".($a*$b)."}";
} else {
  $eqn = ($eqn)."+".($a-$b)."$var - ".($a*$b)."}";
}

if ($b < 0) {
  $eqn = ($eqn)."- \frac{$var}{".(-$b)." + $var}= \frac{$var - $c}{$var + $a}";
} else {
  $eqn = ($eqn)."+ \frac{$var}{$b - $var}= \frac{$var - $c}{$var + $a}";
}


##########################################

Context()->texStrings;
BEGIN_TEXT
$PAR
Solve the following equation for \($var\):
$PAR
\[
$eqn
\]
$PAR
\( $var = \) \{ ANS_RULE(20) \}
$PAR
END_TEXT

