# DESCRIPTION
# Gives an expression with negative 1 power and then asks to simplify
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Properties of exponents, rational exponents and radicals)
## DBsection(Properties of exponents)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## Level(2)
## KEYWORDS('rational', 'expressions', 'exponents')
## MLT(Algebra_PropExp_PropExp)

###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextLimitedPowers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@vars = ("x","y","z","s","t");
$choice = random(0,4,1);
$var = $vars[$choice];
Context()->variables->are($var=>"Real");

LimitedPowers::OnlyPositiveIntegers();
$a = random(2,9);
do {$b = random(2,9)} until ($b != $a);

$c1 = random(0,1,1);
@questions = ("$a $var^{-1}", "\left($b $var\right)^{-1}");
@answers = (Formula("$a/$var")->reduce, Formula("1/($b $var)")->reduce);
$qa = $questions[$c1];
$qb = $questions[($c1+1)%2];
$ansa = $answers[$c1];
$ansb = $answers[($c1+1)%2];
Context()->operators->undefine("^","**");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Simplify each expression and write your answer using positive exponents only.
$PAR
(a) \($qa = \) \{ans_rule(20)\}
$PAR
(b) \($qb = \) \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ansa->cmp());
ANS($ansb->cmp());

  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{AnswerFormatHelp("formulas", "Click here for help entering formulas as answers.")\}
  $BR
  END_TEXT
Context()->normalStrings;

ENDDOCUMENT();
