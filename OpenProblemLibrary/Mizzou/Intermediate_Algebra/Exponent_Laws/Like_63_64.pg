# DESCRIPTION
# Basic exponent laws
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Properties of exponents, rational exponents and radicals)
## DBsection(Properties of exponents)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(ParamExponents)
## Level(2)
## KEYWORDS('exponents')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@vars1 = ("x","y","z");
@vars2 = ("a","b","c");
$var1 = $vars1[random(0,2,1)];
$var2 = $vars2[random(0,2,1)];
Context()->variables->are($var1=>"Real", $var2=>"Real");
$a = random(2,6,1);
$b = random(3,9,1);
$c = random(1,5,1);
do {$d = non_zero_random(-8,8,1)} until (abs($d) != abs($c));
$exp = $a*$b - $c;
$ans1 = Formula("$var1")->reduce;
$ans2 = Formula("$exp $var2 - $d")->reduce;
if ($c == 1) {
  $expression = "\frac{\left($var1^{$a $var2}\right)^{$b}}{$var1^{$var2 + $d}}";
} else {
  $expression = "\frac{\left($var1^{$a $var2}\right)^{$b}}{$var1^{$c $var2 + $d}}";
}



###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;

BEGIN_TEXT
Rewrite the following using a single exponent, and simplify. If
$PAR
\[
$expression = $var1^m
\]
$PAR
then \(m =\) \{ans_rule(20)\}
$BR
END_TEXT

###########################################################################
# check the answer  
###########################################################################
ANS($ans2->cmp());


Context()->normalStrings;

ENDDOCUMENT();
