# DESCRIPTION
# Gives an expression with zero exponents and asks to simplify
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Properties of exponents, rational exponents and radicals)
## DBsection(Properties of exponents)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## Level(2)
## KEYWORDS('rational', 'expressions', 'exponents')
## MLT(Algebra_PropExp_PropExp)

###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPowers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@vars = ("x","y","z","s","t");
$choice = random(0,4,1);
$var = $vars[$choice];
Context()->variables->are($var=>"Real");

LimitedPowers::OnlyPositiveIntegers();
$a = random(2,9);
do {$b = random(2,9)} until ($b != $a);

$c1 = random(0,4,1);
@questions = ("\left($a $var\right)^0 + $b $var^0", "$a $var^0 - \left(-$b $var\right)^0", "$a $var^0 - \left($b $var\right)^0", "$a^0 - $b $var^0", "$a^0+$b $var^0");
@answers = (1 + $b, $a - 1, $a - 1, 1 - $b, 1 + $b);
$q = $questions[$c1];
$ans = $answers[$c1];
Context()->operators->undefine("^","*","+","-");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Simplify
$PAR
\[
$q
\]
$PAR
and write your answer using positive exponents only.
$PAR
Answer: \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($ans)->cmp());

  BEGIN_TEXT
  $BR
  END_TEXT
Context()->normalStrings;

ENDDOCUMENT();
