##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###################################
# Setup

Context("Fraction-NoDecimals");

$a = random(2,10,1);
$b = random(2,10,1);
do {$c = random(2,10,1)} until ($a != $c);
$d = random(2,10,1);
$e = random(2,10,1);

$var = "x";
$eqn = "$a ($b x  + $c)= $d - ( x + $e)";

$num = $d - $e - $a*$c;
$den = $a*$b + 1;

$answer = Fraction($num,$den);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var\):
$PAR
\[
$eqn
\]
$PAR
\( $var = \)
\{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );



Context()->texStrings;

BEGIN_TEXT
$PAR
${BBOLD}Note:${EBOLD} Write ${BBOLD}no solutions${EBOLD} if no solutions exist or ${BBOLD}infinitely many${EBOLD} if there are infinitely many solutions. 
$BR
END_TEXT

ENDDOCUMENT();