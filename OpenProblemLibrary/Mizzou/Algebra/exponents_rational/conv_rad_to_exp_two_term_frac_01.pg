$n = random(3,10,1);
do {$m = random(3,10,1)} until (gcd($n, $m) ==1);
$n2 = random(3,10,1);
do {$m2 = random(3,10,1)} until (gcd($n2, $m2) ==1);

$expression = " \dfrac{~\sqrt[$n]{$var1^{$m}}~}{\sqrt[$n2]{$var2^{$m2}}} ";

Context("Fraction-NoDecimals");
$answer1 = Fraction($m,$n);
$answer2 = Fraction(-$m2,$n2);

