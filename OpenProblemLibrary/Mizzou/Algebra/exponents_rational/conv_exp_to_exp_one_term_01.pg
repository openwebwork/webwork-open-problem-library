###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
  "contextFraction.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction-NoDecimals");
@vars = ("x","y","z","w","u","v","p","q","r");
$ch = random(0,scalar(@vars)-1,1);
$var = $vars[$ch];

$a = random(2,5);
$a2 = $a**2;
$m = random(1,9);
$p = 2*$m;
$r = random(1,3,2);
$k = $m*$r;

$ans1 = Compute("$a**$r");
$ans2 = Compute("$k");

$expression = "\displaystyle \left($a2 $var^{$p}\right)^{$r/2}";



###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Simplify. If
$PAR
\[$expression = A $var^m \]
$PAR
then 
$PAR
\(A = \) \{ans_rule(10)\} and \(m = \) \{ans_rule(10)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans1->cmp(studentsMustReduceFractions=>1));
ANS($ans2->cmp(studentsMustReduceFractions=>1));


ENDDOCUMENT();