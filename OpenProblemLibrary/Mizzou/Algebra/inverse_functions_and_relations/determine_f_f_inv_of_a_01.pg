# DESCRIPTION
# asks the student to determine f(f^-1(a)) or f^-1(f(a))
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Inverse functions)
## DBsection(1-1 functions)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(findpoint_1-1)
## Level(2)
## KEYWORDS('functions')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = random(-1500,1500);

$choice = random(0,1,1); 
if ($choice == 0) {
  $disp = "f^{-1}\left(f\left($a\right)\right)";
} else {
  $disp = "f\left(f^{-1}\left($a\right)\right)";
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Given that \(f(x)\) is a one-to-one function, determine \($disp\).
$PAR
Answer: \{ans_rule(10)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($a)->cmp());


ENDDOCUMENT();
