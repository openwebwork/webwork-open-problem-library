# DESCRIPTION
# gives a point on graph of f and then asks for the student to determine a point on graph of f^-1
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Inverse functions)
## DBsection(1-1 functions)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(findpoint_1-1)
## Level(3)
## KEYWORDS('functions')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = random(-15,15);
do {$b = random(-15,15)} until ($b != $a);

$choice = random(0,1,1); 
if ($choice == 0) {
  Context("Point");
  $ans = Compute("($b,$a)");
} else {
  $ans1 = $b;
  $ans2 = $a;
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
if ($choice == 0) {
  BEGIN_TEXT
  Give that the point \( \left($a,$b\right) \) is on the graph of a one-to-one function \(f(x)\), find a point on the graph of \(f^{-1}\).
  $PAR
  Answer: \{ans_rule(20)\}
  END_TEXT
} else {
  BEGIN_TEXT
  If \(f(x)\) is a one-to-one function and \(f\left($a\right) = $b\), then \(f^{-1} \big(\) \{ans_rule(5)\} \( \big) = \) \{ans_rule(5)\}.
  END_TEXT
}


###########################################################################
# check the answer  
###########################################################################
if ($choice == 0) {
  ANS(Compute($ans)->cmp());
} else {
  ANS(Compute($ans1)->cmp());
  ANS(Compute($ans2)->cmp());
}


ENDDOCUMENT();
