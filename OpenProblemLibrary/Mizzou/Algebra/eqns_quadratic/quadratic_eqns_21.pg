# DESCRIPTION
# Asks to solve of the form x^2+(x+p)^2=k
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Quadratic equations and functions)
## DBsection(Solving equations)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## Level(2)
## MO(1)
## KEYWORDS('grouping','factoring','equations')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@vars = ("x","y","z","s","r","t","a","b","c");
$ch = random(0,8,1);
$v = $vars[$ch];

$n1 = non_zero_random(-6,6);
do {$n2 = non_zero_random(-6,6)} until (abs($n2) != abs($n1));
$k = ($n1+$n2)**2 - 2*$n1*$n2; # = n1^2 + n2^2
$p = $n1+$n2;

$disp = "$v^2 + ($v + $p)^2 = $k";
$ans = List(-$n1,-$n2);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($v\):
$PAR
\[
$disp
\]
$PAR
\($v = \) \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());


  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} Separate multiple answers by a comma separated list.
  $BR
  END_TEXT
Context()->normalStrings;

ENDDOCUMENT();
