# DESCRIPTION
# Solve P = 1 - C/S, for S.
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Rational equations and functions)
## DBsection(Rational equations)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(rateqn_threevars)
## Level(2)
## KEYWORDS('equations', 'rational')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
$var1 = uc(list_random('x','y','z'));
$var2 = uc(list_random('w','p','q','r'));
$var3 = uc(list_random('s','t','u','v'));
Context()->variables->are(lc($var1)=>"Real", uc($var1)=>"Real", lc($var2)=>"Real", uc($var2)=>"Real", lc($var3)=>"Real", uc($var3)=>"Real");

$eqn = "\displaystyle $var1 = 1 - \frac{$var2}{$var3}";

$answer = Formula("$var2/(1-$var1)");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var3\):
$PAR \[$eqn\] $PAR
\($var3 = \) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());


COMMENT('Desc: Solve P = 1 - C/S, for S.');
ENDDOCUMENT();
