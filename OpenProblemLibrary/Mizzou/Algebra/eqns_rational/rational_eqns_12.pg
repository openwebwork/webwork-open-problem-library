# DESCRIPTION
# Solve for the given variable.
# ENDDESCRIPTION


## DBsubject(Algebra)
## DBchapter(Rational equations and functions)
## DBsection(Rational equations)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(rateqn_threevars)
## MLTleader(1)
## Level(2)
## KEYWORDS('equations','rational')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
Context()->variables->are(x=>"Real", y=>"Real", z=>"Real", uc("x")=>"Real", uc("y")=>"Real", uc("z")=>"Real");
$c1 = random(1,6);
do {$c2 = random(1,6)} until (gcd($c1,$c2) == 1);
do {$c3 = random(1,6)} until (gcd($c1,$c2,$c3) == 1);
if ($c1 == 1) {
  $dispeqn = "\frac{1}{x} + ";
} else {
  $dispeqn = "\frac{$c1}{x} + ";
}

if ($c2 == 1) {
  $dispeqn = ($dispeqn)."\frac{x}{y} = ";
} else {
  $dispeqn = ($dispeqn)."\frac{$c2 x}{y} = ";
}

if ($c3 == 1) {
  $dispeqn = ($dispeqn)."\frac{1}{z}";
} else {
  $dispeqn = ($dispeqn)."\frac{$c3}{z}";
}

$case = random(0,1,1); # 0 - solve for z, 1 - solve for y
if ($case == 0) {
  $ans = Formula("($c3 x y)/($c1 y + $c2 (x)**2)");
  $solvefor = "z";
  if ($c3 == 1) {
    $num = "x y";
  } else {
    $num = "$c3 x y";
  }

  if ($c1 == 1 && $c2 == 1) {
    $den = "y + x^2";
  } elsif ($c1 == 1) {
    $den = "y + $c2 x^2";
  } elsif ($c2 == 1) {
    $den = "$c1 y + x^2";
  } else {
    $den = "$c1 y + $c2 x^2";
  }
} else {
  $ans = Formula("($c2 (x)**2 z)/($c3 x - $c1 z)");
  $solvefor = "y";
  if ($c2 == 1) {
    $num = "x^2 z";
  } else {
    $num = "$c2 x^2 z";
  }

  if ($c3 == 1 && $c1 == 1) {
    $den = "x - z";
  } elsif ($c3 == 1) {
    $den = "x - $c1 z";
  } elsif ($c1 == 1) {
    $den = "$c3 x - z";
  } else {
    $den = "$c3 x - $c1 z";
  }
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the following equation for \($solvefor\): 
$PAR
\[
\displaystyle $dispeqn
\]
$PAR
\($solvefor = \) \{ans_rule(25)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($ans)->cmp());



COMMENT('Desc: Solve for the given variable.');
ENDDOCUMENT();
