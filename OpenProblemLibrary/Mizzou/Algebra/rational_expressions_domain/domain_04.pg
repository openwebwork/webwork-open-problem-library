## EditionText1('4')
## Section1('1.2')
## Problem1('')
## KEYWORDS('algebra', 'rational', 'domain')

########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",

  "parserMultiAnswer.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#######################################
#  Set-up
Context()->variables->add( h=>"Real");

## Coefficients
$b = random(2,10,1);
do {$m = random(2,10,1)} until ($m != $b);
do {$n = random(2,10,1)} until ($n != $m && $n != $b);
$e1 = -($m + $n);
$e2 = $m*$n;

## Functions
$f = " \displaystyle\frac{x^2 + $b x}{x^3 + $e1 x^2 + $e2 x}";

Context("Interval");
if ($m < $n) {
  $dom = Compute("(-inf,0)U (0, $m) U ($m, $n) U ($n, inf)");
} else {
  $dom = Compute("(-inf,0)U (0, $n) U ($n, $m) U ($m, inf)");
}

## Answers
ANS( $dom->cmp() );


Context("Numeric");
################################################
#  Main text

BEGIN_TEXT
Find the domain of
$BR
\[
$f
\]
$BR
Write your answer in interval notation.
$PAR
Domain: \{ans_rule(20)\} $SPACE $SPACE \{ helpLink("inequalities", "Click here for help using interval notation") \}.
END_TEXT

Context()->normalStrings;

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

COMMENT('MathObject version');
ENDDOCUMENT();
