########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#######################################
#  Set-up
Context()->variables->add( h=>"Real");

## Coefficients
$a = random(2,10,1);
$b = random(2,10,1);


## Functions
$f = " $a  - \displaystyle \frac{$b}{x}";

Context("Interval");
$dom = Compute("(-inf,0) U (0, inf)");

## Answers
ANS( $dom->cmp() );

 
Context("Numeric");
################################################
#  Main text
Context()->texStrings;
BEGIN_TEXT
Find the domain of 
$PAR
\[
$f
\]
$PAR  
Write your answer in interval notation.
$PAR
Domain: \{ans_rule(20)\} $SPACE $SPACE \{ AnswerFormatHelp("inequalities", "Click here for help using interval notation") \}.
END_TEXT

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version');
ENDDOCUMENT();
