########################################
#  Initialization

DOCUMENT();

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "parserImplicitPlane.pl",
);

TEXT(beginproblem());


#######################################
#  Set-up
Context()->variables->add( h=>"Real");

## Coefficients
$a = random(-1,1,2)*random(2,10,1);
$b = random(2,10,1);
do {$c = random(2,7,1)} until (2*$c != $b - $a);
$e1 = $c - random(2,7,1);
$e2 = $c;
$e3 = $c + random(2,7,1);

$f1 = "x + $a";
$f2 = "$b - x";

## Answers
$ans1 = $e1 + $a;
$ans2 = $e2 + $a;
$ans3 = $b - $e3;

ANS( Compute($ans1)->cmp() );
ANS( Compute($ans2)->cmp() );
ANS( Compute($ans3)->cmp() );



$lcb = "\{";
Context("Numeric");
################################################
#  Main text

BEGIN_TEXT
Find the following values of the function
$PAR
\[ 
f(x)  = \left$lcb
\begin{array}{ccc}
$f1 & & x \leq $c
\\
$f2 & & x > $c
\end{array}
\right.
\]
$PAR
$SPACE \(f($e1) = \) \{ans_rule(10)\} $BR
$SPACE \(f($e2) = \) \{ans_rule(10)\} $BR
$SPACE \(f($e3) = \) \{ans_rule(10)\}

END_TEXT


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('Evaluate piecewise function at a point');
ENDDOCUMENT();