# DESCRIPTION
# Asks to compute the distance between two integers.
# ENDDESCRIPTION

## Author1('Rick Lynch')
## Author2('David Covert')
## Author3('Teri Christiansen')
## DBsubject(Arithmetic)
## DBchapter(Integers)
## DBsection(Absolute value)
## Institution(University of Missouri-Columbia)
## Level(2)
## KEYWORDS('absolute value', 'distance')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = non_zero_random(-100,100,1);
do {$b = -random(1,100,1)} until ($b != $a);
$ans = abs($a - $b);
Context()->operators->undefine("*","* ","+","-","^","**");
Context()->functions->disable("All");
Context()->parens->remove("|");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Find the distance between the pair of real numbers: \($a\), \($b\). 
$PAR
Answer: \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($ans)->cmp());


Context()->normalStrings;

ENDDOCUMENT();