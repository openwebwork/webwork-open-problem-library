# DESCRIPTION
# Simplify expression of form [ (a + b x)^m ]^n
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Properties of exponents, rational exponents and radicals)
## DBsection(Properties of exponents)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(VariablesInExponents)
## Level(3)
## KEYWORDS('exponents')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
Context()->functions->disable('All');
Context()->parens->remove("|");
Context()->operators->undefine("/");
$var = list_random('x','y','z','w');
Context()->variables->are($var=>"Real", uc($var)=>"Real", m=>"Real", M=>"Real");

$a = random(2,5);
$b = non_zero_random(-9,9);
$ins = nicestring([$a,$b],["",$var]);
$m = random(3,9);
$n = random(15,25);

$expn = "\left[ \left($a + $b $var\right)^{$m}\right]^{$n} = ($a + $b $var)^m";

$k = $n*$m;
$answer = Formula("$k")->reduce;
$texanswer = "\(m = $k\)";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Rewrite the following using a single exponent, and simplify. If
$PAR \[ $expn \] $PAR
then \(m =\) \{ans_rule(20)\}.
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());



COMMENT('Desc: Simplify expression of form [ (a + b x)^m ]^n.');
ENDDOCUMENT();