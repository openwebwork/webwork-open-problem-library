# DESCRIPTION
# Simplify exponents in an expression.
# ENDDESCRIPTION

## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## DBsubject(Algebra)
## DBchapter(Properties of exponents, rational exponents and radicals)
## DBsection(Properties of exponents)
## Institution(University of Missouri-Columbia)
## MLT(VariablesInExponents)
## Level(3)
## KEYWORDS('exponents')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
Context()->functions->disable('All');
Context()->parens->remove("|");
Context()->operators->undefine("/");
$var1 = list_random('s','x');
$var2 = list_random('t','y');
$base = list_random('K','P','N');
Context()->variables->are($var1=>"Real", $var2=>"Real", $base=>"Real", m=>"Real", uc($var1)=>"Real", uc($var2)=>"Real", lc($base)=>"Real", M=>"Real");

$a = random(4,10,1);
$b = random(2,10,1);
do {$c = random(2,9,1)} until ($a > $c);
$d = random(2,10,1);
$e1 = $a - $c;
$e2 = $b + $d;

$expn = "$base^{$a $var1 + $b $var2} \cdot $base^{-$c $var1 + $d $var2} = $base^{m}";

$answer = Formula("$e1 $var1 + $e2 $var2")->reduce;
$texanswer = ($e1 == 1) ? "\($var1 + $e2 $var2\)" : "\($e1 $var1 + $e2 $var2\)";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Rewrite the following using a single exponent, and simplify. If
$PAR \[ $expn \] $PAR
then \(m =\) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());


COMMENT('Desc: Simplify exponents in an expression.');
ENDDOCUMENT();