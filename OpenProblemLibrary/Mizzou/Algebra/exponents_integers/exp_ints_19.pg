# DESCRIPTION
# Rewrite using a single exponent.
# ENDDESCRIPTION

## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## DBsubject(Algebra)
## DBchapter(Properties of exponents, rational exponents and radicals)
## DBsection(Properties of exponents)
## Institution(University of Missouri-Columbia)
## MLT(ExponentsFillBoxes)
## Level(2)
## KEYWORDS('exponents')

###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPowers.pl",
  "unionTables.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
Context()->variables->are(a=>"Real", b=>"Real", A=>"Real", B=>"Real");
LimitedPowers::OnlyPositiveIntegers();
Context()->operators->undefine("+","-","/");

$n = random(2,23);

$expn = "a^{$n} b^{$n}";

$answer1 = Formula("a b");
$answer2 = Formula("$n");
$texanswer = "\((ab)^{$n}\)";

if ($displayMode eq 'TeX') {
  $showpower = "\(\displaystyle $expn = (".ans_rule(10).")^{".ans_rule(10)."}\)";
} else {
  $showpower =
  ColumnTable(
  "\( \displaystyle $expn = \Big( \) ".ans_rule(10)." \( \Big) \)",
  ans_rule(10).$BR.$BR,
  indent => 0, separation => 0, valign => "BOTTOM"
  );
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Write the following using positive exponents only, and simplify.
$PAR
$BCENTER
$showpower
$ECENTER
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer1->cmp());
ANS($answer2->cmp());


COMMENT('Desc: Rewrite using a single exponent.');
ENDDOCUMENT();
