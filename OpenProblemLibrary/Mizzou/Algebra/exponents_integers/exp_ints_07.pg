# DESCRIPTION
# Simplify exponents in an expression.
# ENDDESCRIPTION

## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## DBsubject(Algebra)
## DBchapter(Properties of exponents, rational exponents and radicals)
## DBsection(Properties of exponents)
## Institution(University of Missouri-Columbia)
## MLT(VariablesInExponents)
## Level(3)
## KEYWORDS('exponents')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
Context()->functions->disable('All');
Context()->parens->remove("|");
Context()->operators->undefine("/");
$var = list_random('s','t');
$base = list_random('x','y');
Context()->variables->are($var=>"Real", $base=>"Real", uc($base)=>"Real", uc($var)=>"Real", m=>"Real", M=>"Real");

$a = random(4,10,1);
$b = random(2,10,1);

$expn = "$base^{$a $var} \cdot $base^{$b} = $base^{m}";

$answer = Formula("$a $var + $b")->reduce;
$texanswer = "\($a $var + $b\)";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Rewrite the following using a single exponent, and simplify. If
$PAR \[ $expn \] $PAR
then \(m =\) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());


COMMENT('Desc: Simplify exponents in an expression.');
ENDDOCUMENT();