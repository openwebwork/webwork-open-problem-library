# DESCRIPTION
# Simplify expression of form (a4 x^4 + a3 x^3 + a2 x^2 + a1 x + a0) - (b3 x^3 + b2 x^2 + b1 x + b0) or (a3 x^3 + a2 x^2 + a1 x + a0) + (b4 x^4 + b3 x^3 + b2 x^2 + b1 x + b0).
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Operations on polynomial and rational expressions)
## DBsection(Polynomials: add, subtract)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(Poly_plus_poly)
## Level(2)
## KEYWORDS('expanding', 'polynomial', 'polynomials')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
  "contextLimitedPolynomial.pl",
  "PGchoicemacros.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedPolynomial-Strict");
$var = list_random('x','y','z','t','p','q','u','v');
Context()->variables->are(lc($var)=>"Real", uc($var)=>"Real");

do {($a4, $a3,$a2,$a1,$a0) = (non_zero_random(-7,7), non_zero_random(-7,7), non_zero_random(-7,7), non_zero_random(-7,7), non_zero_random(-7,7))} until (abs($a1) != abs($a2));
do {($b3,$b2,$b1,$b0) = (non_zero_random(-7,7), non_zero_random(-7,7), non_zero_random(-7,7), non_zero_random(-7,7))} until (abs($b2) != abs($a2) || abs($b1) != abs($a1));

$poly[0] = nicestring([$a4,$a3,$a2,$a1,$a0], ["$var^4","$var^3","$var^2","$var",""]);
$poly[1] = nicestring([$b3,$b2,$b1,$b0], ["$var^3","$var^2","$var",""]);
@k = NchooseK(2,2);
$expn = "($poly[$k[0]]) + ($poly[$k[1]])";

$poly = nicestring([$a4,$a3+$b3,$a2+$b2,$a1+$b1,$a0+$b0], ["$var^4","$var^3","$var^2","$var",""]);
$answer = Formula($poly)->reduce;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Perform the operation
$PAR\[ $expn \] $PAR
and combine line terms. Simplify your answer as much as possible.
$PAR
Answer: \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());

Context()->normalStrings;

COMMENT('Simplify expression of form (a4 x^4 + a3 x^3 + a2 x^2 + a1 x + a0) + (b3 x^3 + b2 x^2 + b1 x + b0) or (a3 x^3 + a2 x^2 + a1 x + a0) + (b4 x^4 + b3 x^3 + b2 x^2 + b1 x + b0).');
ENDDOCUMENT();