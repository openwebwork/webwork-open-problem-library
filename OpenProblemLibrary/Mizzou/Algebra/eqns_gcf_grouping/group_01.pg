# DESCRIPTION
# Asks to solve a factor by grouping equation
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Polynomial equations and functions)
## DBsection(Zeros and multiplicities)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## Level(2)
## MO(1)
## KEYWORDS('grouping','factoring','equations')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@vars = ("x","y","z","s","r","t","a","b","c");
$ch = random(0,8,1);
$v = $vars[$ch];
$d = non_zero_random(-5,5);
$c = -1;
$b = $c*$d;

do {
  $k = random(1,6);
  $k2 = ($k)**2;
} until ($k != abs($d));

$case = random(0,1,1);

if ($case == 0) {
  $disp = "$v^3 + $b $v^2";
  $e1 = $k2*$d;
  $disp = ($k2 == 1) ? $disp."= $v-$e1" : $disp."= $k2 $v-$e1";
} else {
  $disp = "$v^3";
  $e1 = $k2*$d;
  $disp = ($k2 == 1) ? $disp."- $v =" : $disp."- $k2 $v =";
  if ($e1 < 0) { 
    $e1 = -$e1;
    $disp = $disp."$e1 - $b $v^2";
  } else {
    $e2 = -$b;
    $disp = $disp."$e2 $v^2 - $e1";
  }
}

$ans = List(-$k,$k,-$b);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($v\):
$PAR
\[
$disp
\]
$PAR
\($v = \) \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());


  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} Separate multiple answers by a comma separated list.
  $BR
  END_TEXT
Context()->normalStrings;

ENDDOCUMENT();
