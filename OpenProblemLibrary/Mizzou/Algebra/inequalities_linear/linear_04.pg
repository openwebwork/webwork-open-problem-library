##################################
#  Initialization

DOCUMENT();

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "contextFraction.pl",
   "AnswerFormatHelp.pl",
   "parserMultiAnswer.pl",
   "PeriodicRerandomization.pl",
   "PGcourse.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real" );

$var = list_random('x','y','z','w','u','v','p','q');

$a = random(5,10,1);
$b = random(3,5,1);
$ab = $a*$b;
$c = random(2,10,1);
$e = random(2,5,1);
$d = $b*$e - random(1,7);

Context("Fraction-NoDecimals");
$endpoint = Fraction($d*$e, ($b*$e - $d + $b*$c));

$case = random(1,4,1);

Context("Interval");
if($case ==1){
   $string = '>';
   $ans = Compute( " ($endpoint,inf) " );}
elsif($case ==2){
   $string = '<';
   $ans = Compute( " (-inf,$endpoint) " );}
elsif($case == 3){
   $string = '\geq';
   $ans = Compute( " [$endpoint,inf) " );}
elsif($case ==4){
   $string = '\leq';
   $ans = Compute( " (-inf,$endpoint] " );}
   
$ineq = "$a ($b $var - $d)($var + $e) $string $ab $var ($var - $c)";

$interval = Compute("[1,2)");
ANS( Compute($ans)->cmp() );


##########################################

Context()->strings->add("no solutions"=>{}, "no solution"=>{alias=>"no solutions"});
Context()->texStrings;
BEGIN_TEXT
Solve the following inequality.  Write your answer using interval notation or if no solutions exist write ${BBOLD}no solutions${EBOLD}.
$PAR
\[
$ineq
\]
$PAR
Answer: \{ANS_RULE\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  if ($case == 1) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left($endpoint,\infty\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 2) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left(-\infty,$endpoint\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 3) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left[$endpoint,\infty\right)\)
    $PAR
    END_TEXT
  } else {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left(-\infty,$endpoint\right]\)
    $PAR
    END_TEXT
  } 
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{ helpLink("intervals","Click here for help entering intervals as answers.") \}.
  $BR
  END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



$showPartialCorrectAnswers = 1;

COMMENT('of form a (bx - c)(x + d) <*> e x(x - f), where <*> is any inequality');
ENDDOCUMENT();