##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real" );

$var = list_random('x','y','z','w','u','v','p','q');

$a = random(5,10,1);
$b = random(-1,1,2)*random(1,10,1);
$c = random(5,10,1);
$ac = $a + $c;
$d = random(2,5,1);

Context("Fraction-NoDecimals");
$end1 = Fraction($a - $b,$d);
$end2 = Fraction($a + $c - $b,$d);

$case = random(1,4,1);

Context("Interval")->strings->add("no solutions"=>{}, "no solution"=>{alias=>{"no solutions"}});
if($case ==1){
   $string1 = '<';
   $string2 = '<';
   $ans = Compute( " ($end1,$end2) " );
}
elsif($case ==2){
   $string1 = '\leq';
   $string2 = '<';
   $ans = Compute("[$end1,$end2) " );}
elsif($case == 3){
   $string1 = '<';
   $string2 = '\leq';
   $ans = Compute( " ($end1,$end2] " );}
elsif($case ==4){
   $string1 = '\leq';
   $string2 = '\leq';
   $ans = Compute( " [$end1,$end2] " );}
   
$ineq = "$a $string1 $d $var + $b $string2 $ac ";

ANS( Compute($ans)->cmp() );


##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality. Write your answer in interval notation or if no solutions exist write ${BBOLD}no solutions${EBOLD}. $PAR
\[
$ineq
\]
$PAR
Answer: \{ANS_RULE(10)\}


END_TEXT

    BEGIN_TEXT
   $PAR
  ${BBOLD}Help:${EBOLD} \{AnswerFormatHelp("intervals", "Click here for help entering intervals as answers.")\}
    $BR
    END_TEXT

Context()->normalStrings;

$showPartialCorrectAnswers = 1;

COMMENT('of form a < or <= bx + c < or <= d, where d > a');

ENDDOCUMENT();
