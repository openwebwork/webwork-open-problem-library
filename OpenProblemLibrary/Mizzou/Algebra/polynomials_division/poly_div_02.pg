########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "AnswerFormatHelp.pl",
  "parserRadioButtons.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context()-texStrings;


Context()->flags->set(singlePowers=>1);
Context()->variables->add(
   y=>"Real",
   P=>"Real",
   Q=>"Real",
   d=>"Real",
   R=>"Real",
);

$b = random(2,5,1);
$c = random(2,5,1);
$d = random(2,5,1);
$a = - ($d)**2;

Context("LimitedPolynomial-Strict");
$Q = Compute("x^3 + $d x^2 + $b")->reduce;
$D = "x - $d";
$P = "x^4 + $a x^2 + $b x + $c ";
$r = $c + $d*$b;




################################################
#  Main text
Context()->texStrings;
BEGIN_TEXT

Given the polynomial \(P(x) = $P\) and divisor \(d(x) = $D\), find the quotient \(Q(x)\) and remainder \(R(x)\).  
$PAR
Write your answer in the form \( P(x) = d(x) Q(x) + R(x)\).
$PAR
$SPACE \($P = ($D) \big( \) \{ans_rule(25)\} \( \big) + \big( \) \{ans_rule(10)\} \( \big) \).
END_TEXT


Context()->normalStrings;



################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute($Q)->cmp() );
ANS( Compute($r)->cmp() );




COMMENT('MathObject version');
ENDDOCUMENT();
