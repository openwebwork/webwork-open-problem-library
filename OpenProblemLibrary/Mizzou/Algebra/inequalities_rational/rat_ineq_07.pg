##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real");

$var = list_random('x','y','z','w','u','v');

do {
$a = random(2,8,1);
$b = random(-1,1,2)*random(2,8,1);
$c = random(2,5,1);

$case = random(1,4,1);

######endpoints
Context("Fraction-NoDecimals");
$end1 = Fraction($c*$b + $a,1 - $c);
$end2 = -$b;
} until ($end1 < $end2);

Context("Interval");
$flip = random(0,1);
if($case == 1){
   $string = ($flip == 0) ? '<' : '>';
   $ans = Compute( "(-inf,$end1) U ($end2,inf)" ) ;}
elsif($case ==2){
   $string = ($flip == 0) ? '\leq' : '\geq';
   $ans = Compute( "(-inf,$end1] U ($end2,inf)" ) ;}
elsif($case == 3){
   $string = ($flip == 0) ? '>' : '<';
   $ans = Compute( "($end1,$end2)" ) ;}
elsif($case ==4){
   $string = ($flip == 0) ? '\geq' : '\leq';
   $ans = Compute( "[$end1,$end2)" ) ;}

ANS( Compute($ans)-> cmp() );

$ineq = ($flip == 0) ? "\frac{ $var - $a }{ $var + $b } $string $c" : "$c $string \frac{ $var - $a }{ $var + $b }";



##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
\{ANS_RULE(10)\}

END_TEXT


Context()->normalStrings;



$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'either expn > n or expn < n or expn >= n or expn <= n');
ENDDOCUMENT();
