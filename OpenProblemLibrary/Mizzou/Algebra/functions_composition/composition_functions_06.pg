# DESCRIPTION
# Find f so that h = g(f).
# ENDDESCRIPTION

## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## DBsubject(Algebra)
## DBchapter(Functions)
## DBsection(Compositions and combinations of functions)
## Institution(University of Missouri-Columbia)
## Level(3)
## KEYWORDS('functions', 'composition', 'composition of functions')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
  "contextLimitedPolynomial.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedPolynomial");
$c0 = non_zero_random(-10,10,1);
$c1 = random(-1,1,2)*random(2,10,1);
$c2 = random(-1,1,2)*random(2,10,1);
$c3 = random(-1,1,2)*random(2,10,1);
$a = random(2,10,1);
$b = non_zero_random(-10,10,1);

$f = Formula("$a x + $b")->reduce;
$g = "$c3 x^3 + $c2 x^2 + $c1 x + $c0";
$h = "$c3 ($a x + $b) ^3 + $c2 ($a x + $b)^2 + $c1 ($a x + $b) + $c0";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Find a function \(f(x)\) so that \(h(x) = (g \circ f)(x)\) given that
$PAR
$BCENTER
\(g(x) = \displaystyle $g\)
$ECENTER
$PAR
and
$PAR
$BCENTER
\(h(x) = \displaystyle $h\).
$ECENTER
$PAR
\(f(x) = \) \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($f->cmp());

COMMENT('Desc: Find f so that h = g(f).');
ENDDOCUMENT();