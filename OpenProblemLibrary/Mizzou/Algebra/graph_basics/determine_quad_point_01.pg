# DESCRIPTION
# Given (x,y), asks to find the quadrant in which the point (-y,-x),(y,-x), etc lies in
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Cartesian coordinate system)
## DBsection(Plotting points)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(reflect-point)
## MLTleader(1)
## Level(2)
## KEYWORDS('quadrant', 'quadrants')

###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
  "contextFraction.pl",
);

TEXT(beginproblem());
$refreshCachedImages = 1;
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
Context()->strings->add(I=>{alias=>"1"},II=>{alias=>"2"},III=>{alias=>"3"},IV=>{alias=>"4"},VI => {},1=>{}, 2=>{}, 3=>{}, 4=>{});
$max = 20;
$min = -20;
$x1 = random($max,$min);
$y1 = random($max,$min);
$quad = random(1,4);
do {$quadans = random(1,4)} until ($quadans != $quad);
$disppoint = "(x,y)";

if ($quad == 1) {
  $quadstr = "I";
  if ($quadans == 2) {
    $disppointans = "(-y,x)";
  } elsif ($quadans == 3) {
    $disppointans = "(-y,-x)";
  } elsif ($quadans == 4) {
    $disppointans = "(y,-x)";
  }
} elsif ($quad == 2) {
  $quadstr = "II";
  if ($quadans == 1) {
    $disppointans = "(y,-x)";
  } elsif ($quadans == 3) {
    $disppointans = "(-y,x)";
  } elsif ($quadans == 4) {
    $disppointans = "(y,x)";
  }
} elsif ($quad == 3) {
  $quadstr = "III";
  if ($quadans == 1) {
    $disppointans = "(y,x)";
  } elsif ($quadans == 2) {
    $disppointans = "(y,-x)";
  } elsif ($quadans == 4) {
    $disppointans = "(-y,x)";
  }
} else {
  $quadstr = "IV";
  if ($quadans == 1) {
    $disppointans = "(-y,x)";
  } elsif ($quadans == 2) {
    $disppointans = "(y,x)";
  } elsif ($quadans == 3) {
    $disppointans = "(y,-x)";
  }
}

if ($quadans == 1) {
  $quadansstr = "I";
} elsif ($quadans == 2) {
  $quadansstr = "II";
} elsif ($quadans == 3) {
  $quadansstr = "III";
} else {
  $quadansstr = "IV";
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
If \($disppoint\) is a point in quadrant $quadstr, in what quadrant is the point \($disppointans\)?

$PAR
Quadrant: \{ans_rule(5)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(String($quadans)->cmp());


COMMENT('Given (x,y), asks to find the quadrant in which the point (-y,-x),(y,-x), (y,x), (-y,x) lies in');
ENDDOCUMENT();
