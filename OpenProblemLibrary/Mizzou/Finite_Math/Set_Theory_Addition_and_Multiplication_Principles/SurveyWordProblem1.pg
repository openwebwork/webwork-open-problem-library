DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric");
$a = random(150,225,1);
$b = random(60,125,1);
$c = random(15,27,1);

$answer = $a + $b - $c;

##############################################################
#
#  Text
#

Context()->texStrings;
BEGIN_TEXT
A company conducted a marketing survey of  its clientele and found that \($a\) own an iPhone and \($b\) own an iPad.  If \($c\) clients own both an iPhone and an iPad, how many interviewed have an iPhone or an iPad?
$PAR
\{ANS_RULE(10)\}
END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#

ANS(Compute($answer)->cmp);

ENDDOCUMENT();
