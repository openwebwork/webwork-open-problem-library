##DESCRIPTION
##  Matrix Operations
##ENDDESCRIPTION

 
## Author1('David Covert')
## Author2('Jason Aubrey')
## DBsubject(Linear algebra)
## DBchapter(Matrices)
## DBsection(Inverses)
## Date(Spring 2012)
## Institution(University of Missouri)
## Level(2)
## KEYWORDS('linear algebra', 'matrix inverse')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric");
$a11 = non_zero_random(-3,3,1);
$a12 = random(-3,3,1);
$a13 = random(-3,3,1);
$a22 = non_zero_random(-3,3,1);
$a23 = random(-3,3,1);
$a33 = non_zero_random(-3,3,1);
$b12 = random(-3,3,1);
$b31 = random(-3,3,1);
$b32 = random(-3,3,1);

Context("Matrix");
$L = Matrix( [ [1,0,0], [$b12,1,0], [$b31,$b32,1] ] );
$R = Matrix( [ [$a11, $a12, $a13], [0,$a22,$a23], [0,0,$a33] ] );
$A = $L*$R;
$inv = $A->inverse();


############################################
Context()->texStrings;
BEGIN_TEXT

Find the inverse of the matrix
$PAR
\[
A = $A.
\]
$PAR
The inverse is
$PAR $BCENTER
\(A^{-1} = \) \{ $inv ->ans_array\}
$ECENTER

END_TEXT

ANS($inv->cmp);


ENDDOCUMENT();        
