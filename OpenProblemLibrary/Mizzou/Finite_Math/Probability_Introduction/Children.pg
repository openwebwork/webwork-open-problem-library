DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric");


$n = random(3,7,1);
$n2 = random(1,2,1);

if($n2 == 1){
   $string = 'girl';}
else{
   $string = 'girls';}

$ans = C($n,$n2)/2**$n;


##############################################################
#
#  Text
#

Context()->texStrings;
BEGIN_TEXT
In a family with \($n\) children, excluding multiple births, what is the probability of having exactly \($n2\) $string? 
$BR
Assume that having a boy is as likely as having a girl at each birth.
$PAR
\{ANS_RULE(10)\}
END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#

ANS(Compute($ans)->with(tolerance=>0.0001)->cmp);

ENDDOCUMENT();
