##DESCRIPTION
##  Introduction to Probability: Conditional Probability
##ENDDESCRIPTION


## Author1('David Covert')
## Author2('Jason Aubrey')
## DBsubject(Probability)
## DBchapter(Sample Space)
## DBsection(Conditional probability -- direct)
## Date(Spring 2012)
## Institution(University of Missouri)
## Level(2)
## KEYWORDS('probability', 'conditional')

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextCurrency.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$ac = Real(random(0.1,0.33,0.01));
$bc = Real(random(0.1,0.33,0.01));
$ad = Real(random(0.1,0.33,0.01));
$bd = 1 - ($ac + $bc + $ad);

$A = $ac + $ad;
$B = $bc + $bd;
$C = $ac + $bc;
$D = $ad + $bd;

$ans1 = $ad;
$ans2 = $A + $D - $ad;
$ans3 = $ad/$A;
$ans4 = $bc/$C;

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

Suppose events A, B, C, and D have probabilities as follows:

$PAR
$BCENTER
\{ begintable(4) \}
\{ row( ' ' , 'A', 'B', 'Totals') \}
\{ row( 'C' , $ac, $bc, $C) \}
\{ row( 'D' , $ad, $bd, $D) \}
\{ row ('Totals', $A, $B, '1.00' ) \}
\{ endtable() \}
$ECENTER
$PAR
Find the following:
$PAR
$SPACE $SPACE i) \(P(A \cap D) = \) \{ANS_RULE(10)\}
$PAR
$SPACE $SPACE ii) \(P(A \cup D) = \) \{ANS_RULE(10)\}
$PAR
$SPACE $SPACE iii) \(P(D \mid A) = \) \{ANS_RULE(10)\}
$PAR
$SPACE $SPACE iv) \(P(B \mid C) = \) \{ANS_RULE(10)\}

END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#
#

ANS(Compute($ans1)->cmp);
ANS(Compute($ans2)->cmp);
ANS(Compute($ans3)->cmp);
ANS(Compute($ans4)->cmp);


ENDDOCUMENT();
