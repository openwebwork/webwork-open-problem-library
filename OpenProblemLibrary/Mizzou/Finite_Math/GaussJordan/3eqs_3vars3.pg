DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextCurrency.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$x=random(-5,5,1);
$y=random(-5,5,1);
$z=random(-5,5,1);
$b1 = -$x + $y+$z;
$b2 = 4*$x-3*$y-$z;
$b3 = $x+$y+$z;
##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Solve the system using any method
\[
\begin{array}{l}
        -x+y + z = $b1, \\
        4x-3y - z = $b2. \\
        x + y + z = $b3 \\
\end{array}
\]
$BR
Your answer is
$BR
\(x=\) \{ans_rule(25) \}
$BR
\(y=\) \{ans_rule(25) \}
$BR
\(z=\) \{ans_rule(25) \}
END_TEXT

ANS(Real($x)->cmp);
ANS(Real($y)->cmp);
ANS(Real($z)->cmp);


ENDDOCUMENT();
