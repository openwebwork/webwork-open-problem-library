DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric");

$k = random(3,4,1);
$n = $k + random(8,10,1);
$t = random(20,30,1);

$answer = Compute("$t* ($t - 1)!/(2* ($t - 3)!)");
# Why not simplify?

##############################################################
#
#  Text
#

Context()->texStrings;
BEGIN_TEXT

How many ways can a team of $t hockey players choose a captain and two alternate captains?
$PAR
\{ANS_RULE(10)\}
END_TEXT
Context()->normalStrings;

$u = $t - 1;
$ans = $u*($u - 1)/2;

$showHint = 3;
BEGIN_HINT
There are $t choices for the captain.  Of the remaining $u players, there are \(C($u,2) = $ans\) choices for alternate captain.
END_HINT
##############################################################
#
#  Answers
#

ANS(Compute($answer)->cmp);

ENDDOCUMENT();
