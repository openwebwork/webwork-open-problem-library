loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

$x0 = random(-10,10);
$y0 = non_zero_random(-10,10);
$z0 = non_zero_random(-10,10);

$t = random(1,3);

$x1 = $x0 + $t*1;
$y1 = $y0 + $t*2;
$z1 = $z0 + $t*3;



## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR

Find the equation of the sphere if one of its diameters has endpoints
($x0, $y0, $z0) and ($x1, $y1, $z1).
$BR
\{ans_rule(60)\} = 0.
$PAR
END_TEXT
    $radius =  sqrt(($x1 - $x0)**2 + ($y1 - $y0)**2 + ($z1 - $z0)**2)/2;
$xc = ($x0 + $x1)/2;
$yc = ($y0 + $y1)/2;
$zc = ($z0 + $z1)/2;

ANS(fun_cmp("(x - $xc)**2 + (y - $yc)**2 + (z - $zc)**2 - $radius**2", vars=>["x","y","z"]  ));

ENDDOCUMENT();




