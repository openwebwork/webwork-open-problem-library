DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "Dartmouthmacros.pl",
  "PGcourse.pl"
);
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

$a = random(2,5);
$b = random(2,5);
$c = random(1,5);
$t0 = random(1,3);


$x0 = $t0**($a) - 1;
$y0 = $t0**($b) + 1;
$z0 = $t0**($c);
## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR

Find the parametric equations for the tangent line to the curve 
\[ x =
    t^{$a} - 1, y = t^{$b} + 1, z = t^{$c}
\]
 at the
    point ($x0, $y0, $z0). Use
    the variable t for your parameter.

 $BR


\( x = \)\{ans_rule(25)\},$BR
\( y = \)\{ans_rule(25 )\},$BR
\( z = \)\{ans_rule(25)\}
$PAR
END_TEXT

 ANS(fun_cmp("$x0 + t*$a*$t0**($a - 1)", vars=>["t"]));
 ANS(fun_cmp("$y0 + t*$b*$t0**($b-1)", vars=>["t"]));
 ANS(fun_cmp("$z0 + t*$c*$t0**($c-1)", vars=>["t"]));
ENDDOCUMENT();




