DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

$a1 = random(-5,5);
$a2 = random(-5,5);
$a3 = random(-5,5);
$b1 = random(-5,5);
$b2 = random(-5,5);
$b3 = random(-5,5);

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Find \(\mathbf a \bullet \mathbf b\) if

\(\mathbf a = \langle $a1, $a2, $a3 \rangle \) and 
\(\mathbf b = \langle $b1, $b2, $b3 \rangle \) and 
$BR
\{ans_rule()\}$BR

Is the angle between the vectors "acute", "obtuse" or "right"?

\{ans_rule()\}$BR
$PAR
END_TEXT
    $dot = $a1 * $b1 + $a2 * $b2 + $a3 * $b3;
    ANS(num_cmp($dot));
if ($dot > 0 ) {ANS(str_cmp("acute"));}
elsif ($dot < 0) {ANS(str_cmp("obtuse"));}
else {ANS(str_cmp("right"));}

ENDDOCUMENT();




