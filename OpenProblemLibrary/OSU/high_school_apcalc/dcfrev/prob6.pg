DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$b = random(3,7,1);
$c = random(2,5,1);
$xo = random(3,8,1);
$yo = random(1,10,1);
$m = random(2,5,1);
$n = random($m+1,2*$m,1);
$p = random($m,$n+1,1);
$f = $a*$xo**$m + $b*$xo**$n*$yo - $c*$yo**$p;

$ans1 = "($m*$a*x^($m-1)+$n*$b*x^($n-1)*y)/($p*$c*y^($p-1)-$b*x^$n)";
$ans2 = ($m*$a*$xo**($m-1)+$n*$b*$xo**($n-1)*$yo)/($p*$c*$yo**($p-1)-$b*$xo**$n);
$ans3 = "$ans2*(x- $xo)+$yo";
BEGIN_TEXT
Find \(\frac{dy}{dx}\) when
\[$a x^{$m}+ $b x^{$n}y - $c y^{$p} = $f \]
\(\frac{dy}{dx}=\) $BR
\{ans_rule(60)\}$BR
The slope of the tangent line to this curve at the point \(($xo,$yo)\) is
\{ans_rule(30)\}$BR
The equation of the tangent line to this curve at this point is $BR
\(y =\) \{ans_rule(50)\}
END_TEXT

ANS(fun_cmp($ans1, vars=>["x","y"]));
ANS(num_cmp($ans2));
ANS(fun_cmp($ans3));

ENDDOCUMENT();        # This should be the last executable line in the problem.

