DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(3,7,1);
$b = random($a+1,12,1);
$c = random($b+1,17,1);

$lam = 2*($b+$c- $a)/3;
$sigm = ($b*$c- $a*$b - $a*$c)/3;

$disc = sqrt($lam**2-4*$sigm);
$inflect1 = ($lam - $disc)/2;
$inflect2 = ($lam + $disc)/2;

$case = random(0,1,1);

if ($case) {
   $ans2 = "max";
   $ans4 = "min";
   $ans6 = "max";
   $funct = "(x+ $a)($b -x)(x- $c)";
} else {
   $ans2 = "min";
   $ans4 = "max";
   $ans6 = "min";
   $funct = "(x+ $a)($b -x)($c -x)";
}

BEGIN_TEXT
Suppose that it is given to you that
\[f'(x)= $funct\]
$BR
Then the first relative extremum (from the left) for \(f(x)\) occurs
at \(x=\) \{ans_rule(20)\}
$BR
The function
\(f(x)\) has a relative \{pop_up_list(['?', 'max', 'min'])\} at this point.
$BR
$BR
The second relative extremum (from the left) for \(f(x)\) occurs
at \(x=\) \{ans_rule(20)\}
$BR
The function
\(f(x)\) has a relative \{pop_up_list(['?', 'max', 'min']) \} at this point.
$BR
$BR
The third relative extremum (from the left) for \(f(x)\) occurs
at \(x=\) \{ans_rule(20)\}
$BR
The function
\(f(x)\) has a relative \{pop_up_list(['?', 'max', 'min'])\} at this point.
$BR
$BR
The first inflection point (from the left) for \(f(x)\) occurs
at \(x=\) \{ans_rule(20)\}
$BR
$BR
The second inflection point (from the left) for \(f(x)\) occurs
at \(x=\) \{ans_rule(20)\}
END_TEXT

ANS(num_cmp(- $a));
ANS(str_cmp($ans2));
ANS(num_cmp($b));
ANS(str_cmp($ans4));
ANS(num_cmp($c));
ANS(str_cmp($ans6));
ANS(num_cmp($inflect1));
ANS(num_cmp($inflect2));

ENDDOCUMENT();        # This should be the last executable line in the problem.

