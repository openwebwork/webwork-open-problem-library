DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context('Numeric');

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a_gen  = random(2,9,1);
$a_sign = random(-1,1,2);
$a      = $a_gen * $a_sign;

$e = exp(1);

$gen = random(0,1,1);

if ($gen == 0) {
  $trig1 = "\sin";
  $ans  =  Compute("$a*$e^(x*sin(x))*(sin(x) + x*cos(x))");
  }
if ($gen == 1) {
  $trig1 = "\cos";
  $ans  =  Compute("$a*$e^(x*cos(x))*(cos(x) - x*sin(x))");
  }

BEGIN_TEXT
Let \[ f(x) = $a e^{x $trig1 x} \]
$BR$BR
\( f'( x ) = \) \{ans_rule(45) \}
END_TEXT

ANS($ans->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
