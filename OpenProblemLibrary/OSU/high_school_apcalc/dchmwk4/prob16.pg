DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraders.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);


Context('Point');
$s = random(-1,1,2);
$b = random(-1,1,2)*random(2,7,1);
$k = $s*random(1,7,1);
$kk = $k**2;
$m = random(-1,1,2)*random(2,7,1);
$a = - $m*$kk;
$x0 = - $b + $k;
$y0 = $a/$k;
$bb = - $m*$x0 + $y0;

TEXT(beginproblem());
BEGIN_TEXT
The line \(y = $m x + $bb\) is tangent to the graph of
\[y = \frac{$a}{x + $b}\]
at the point \{ans_rule(10)\}
\{ AnswerFormatHelp("points") \}
END_TEXT

$ans=Compute("($x0,$y0)");
ANS($ans->cmp);


ENDDOCUMENT();
