DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);


$s = random(-1,1,2);
$a = $s*random(4,9,1);
$b = - $s*random(2,7,1);
if ($a + $b == 0) {$b = $b - $s;}
$c = random(-1,1,2)*random(1,8,1);
$m = random(-1,1,2)*random(2,7,1);
$quad = -3*($a+$b);
$lin = 6*$a*$b+$m;
$ya = 2*$a**3+$quad*$a**2+$lin*$a+$c;
$bb = $ya - $m*$a;

Context('Point');

$p = Compute("($a, $ya)");

TEXT(beginproblem());

BEGIN_TEXT
The line \(y = $m x + $bb\) is tangent to the graph of
\[y = 2 x^3 + $quad x^2 + $lin x + $c\]
at the point \{ans_rule(20)\}. \{ AnswerFormatHelp("points") \}
END_TEXT

ANS($p->cmp);

ENDDOCUMENT();
