## DESCRIPTION
##   Area Between Two Curves
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Calculus - single variable)
## DBchapter(Applications of integration)
## DBsection(Areas between curves)
## Institution(OSU)
## Level(4)
## KEYWORDS('Area', 'Between Curves', 'Integral')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1;
$seed = random(1,4,1);
SRAND($seed);


$pi = 4*arctan(1);
$f = random(2,4,1);
$g = random(2,4,1);
$c = arctan($g/$f);
$c1 = spf ($c/$pi, "%4.1f")+.1;
$a = random($c1,1,.1);
$b = $a*$pi;
$ans = 2*$f*cos($c) + 2*$g*sin($c)- $f*cos($b) -$g*sin($b)-$f;

TEXT(beginproblem());
BEGIN_TEXT
Find the area of the region enclosed between \(y=$f \sin(x)\) and \(y=$g \cos(x)\) from
\(x=0\) to \(x=$a\pi\). Hint: Notice that this region consists of two parts.
$BR
\{ans_rule(45)\}
$PAR
END_TEXT

ANS(num_cmp($ans));


ENDDOCUMENT();        # This should be the last executable line in the problem.
