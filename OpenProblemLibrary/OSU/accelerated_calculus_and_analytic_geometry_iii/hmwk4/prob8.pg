DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1, 10);

$ans = 2 * $a ** 2 * ($PI/4);

BEGIN_TEXT
$PAR
Using polar coordinates, evaluate the integral which gives the area which lies
in the first quadrant between the circles \( x^2 + y^2 = \{ 4*$a**2 \} \) and \(
x^2 - \{2*$a\}x + y^2 = 0 \).
$PAR
\{ ans_rule(50) \}
END_TEXT
ANS(num_cmp($ans));

ENDDOCUMENT(); 
