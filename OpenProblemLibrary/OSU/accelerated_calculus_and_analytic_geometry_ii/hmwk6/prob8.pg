sub make_conic {
	local($a,$b) = @_;
	$u = random(2,10,2);
	$v = random(3,11,2);
	$s1 = $u**2 - $v**2;
	$s2 = 2*$u*$v;
	$s3 = $u**2 + $v**2;
	if ($s1<$s2) {$tmp=$s1; $s1=$s2; $s2=$tmp;}
	$s2 = random(-1,1,2)*$s2;

	$x0 = random(2,8,1)*random(-1,1,2);
	$y0 = random(3,9,1)*random(-1,1,2);
	if ($a == 0) {
		$x2c = 0;
		$xc = random(3,15,1);
		$y2c = 1;
		$yc  = -2*$y0;
		$const = $y0**2-$xc*$x0;
		$ab2 = 0;
        } elsif ($b == 0) {
		$x2c = 1;
		$xc = -2*$x0;
		$y2c = 0;
		$yc = random(3,15,1);
		$const = $x0**2-$yc*$y0;
		$ab2 = 0;
	} else {
		$a2 = $a**2;
		if ($b>0) {
			$b2 = $b**2;
		} else {
			$b2 = -$b**2;
		}
		$x2c =  $a2;
		$xc = -2*$x0*$a2;
		$y2c = $b2;
		$yc = -2*$b2*$y0;
		$const = $b2*$y0**2+$a2*$x0**2;
		$ab2 = $a2*$b2;
	}
	$rx2c = $x2c*$s1**2+$y2c*$s2**2;
	$rxyc = $x2c*2*$s1*$s2 - $y2c*2*$s1*$s2;
	$ry2c = $x2c*$s2**2+$y2c*$s1**2;
	$rxc = $s3*($xc*$s1- $yc*$s2);
	$ryc = $s3*($xc*$s2+ $yc*$s1);
	$rconst = ($const- $ab2)*$s3**2;
	$question = FEQ("$rx2c x^2 + $rxyc xy + $ry2c y^2 + $rxc x + $ryc y  + $rconst = 0");
}

$a = random(0,15,1);
$b = random(0,17,1)*random(-1,1,2);
if ($a == $b) {$a++;}
$question1 = &make_conic($a,$b);
if (($a == 0) || ($b == 0)) {
        $answer1 = "parabola";
} elsif ($b>0) {
	$answer1 = "ellipse";
} else {
	$answer1 = "hyperbola";
}
