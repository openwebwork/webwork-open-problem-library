DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "Dartmouthmacros.pl",
  "PGcourse.pl"
);
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

$a1 = non_zero_random(-5,5);
$a2 = random(-5,5);
$a3 = random(-5,5);

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Let \( \mathbf a = \langle $a1, $a2, $a3 \rangle\).
$BR
Find a unit vector in the same direction as \( \mathbf a\) having positive first coordinate.

$BR
(\{ans_rule(10)\},\{ans_rule(10)\},\{ans_rule(10)\}) $BR
END_TEXT
    $d = sqrt(($a1)**2 + ($a2)**2 + ($a3)**2);

if ($a1 > 0){
    ANS(num_cmp( $a1/$d ));
    ANS(num_cmp( $a2/$d ));
    ANS(num_cmp( $a3/$d ));
 }
else
{
    ANS(num_cmp(- $a1/$d ));
    ANS(num_cmp(- $a2/$d ));
    ANS(num_cmp(- $a3/$d ));
}   


ENDDOCUMENT();




