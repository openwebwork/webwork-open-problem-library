## Institution(Dartmouth)
## Level(3)
## TitleText1('Basic Multivariable Calculus')
## AuthorText1('Marsden, Tromba, Weinstein')
## EditionText1('3')
## Section1('1.4')
## Problem1('')
## KEYWORDS('plane' 'equation')

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

## Grab three noncolinear(!!) points @p, @q, @r
## and the independent vectors @u = pr and @v = pq
@p = ();
@q = ();
@r = ();
@u = ();
@v = ();
for ($i=0; $i < 3; $i++)
{
    $p[$i] = random(-10,10,1);
## @p is not @q
    $q[$i] = non_zero_random(-5,5,1) + $p[$i];
## @r is set so that $u[i] = $v[i] + i
    $r[$i] = $q[$i] + $i;
    $u[$i] = $r[$i] - $p[$i];
    $v[$i] = $q[$i] - $p[$i];
    
}



## Ok, we are ready to begin the problem...
##

TEXT(beginproblem());


BEGIN_TEXT
$BR
Consider the plane which passes through the three points:
$BR
\( ($p[0], $p[1], $p[2])\) , \( ($q[0], $q[1], $q[2])\), and \(($r[0], $r[1], $r[2]) \).
$BR
END_TEXT

## Compute the cross product of @u and @v
@n = ();
$n[0] = $u[1]*$v[2] - $v[1]*$u[2];
$n[1] = $v[0]*$u[2] - $u[0]*$v[2];
$n[2] = $u[0]*$v[1] - $v[0]*$u[1];

if ($n[0] != 0)
{
BEGIN_TEXT
$PAR
Find the vector normal to this plane which has the form:
$BR
( $n[0], \{ans_rule(10)\}, \{ans_rule(10)\} )
END_TEXT

ANS(num_cmp($n[1]));
ANS(num_cmp($n[2]));
}
elsif ($n[1] != 0)
{
BEGIN_TEXT
$PAR
Find the vector normal to this plane which has the form:
$BR
( \{ans_rule(10)\}, $n[1], \{ans_rule(10)\}  )
END_TEXT

ANS(num_cmp($n[0]));
ANS(num_cmp($n[2]));
}
else
{
BEGIN_TEXT
$PAR
Find the vector normal to this plane which has the form:
$BR
( \{ans_rule(10)\}, \{ans_rule(10)\}, $n[2] ) 
END_TEXT

ANS(num_cmp($n[0]));
ANS(num_cmp($n[1]));
}




ENDDOCUMENT();
