## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

$a = random(2,20);
$b = $a + random(1,5);

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Find the sum of the series
\[
    \sum_{n=0}^\infty \frac{$a^n}{$b^n n!}
\]
$BR
\{ans_rule(60)\}
$PAR
END_TEXT
    ANS(num_cmp(exp($a/$b)));

ENDDOCUMENT();




