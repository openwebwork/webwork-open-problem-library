$showPartialCorrectAnswers = 1;

## Lots of set up goes here
$a = non_zero_random(-5,5,1);
$a_x = clean_scalar_string($a,"x");
$b = non_zero_random(-5,5,1);
$b_y = clean_scalar_string($b,"y");
$c = non_zero_random(-5,5,1);
$c_z = clean_scalar_string($c,"z");

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
    Evaluate the integral of the vector field
    \( F(x,y,z) = $a_x\mathbf{i} + $b_y\mathbf{j} + $c_z\mathbf{k} \) along the path \( \mathbf{c}(t) = (\sin t, \cos t, t),\ 0\le t \le 3\pi/2.\)

$PAR
\{ans_rule(20)\}
END_TEXT

    ANS(num_cmp(($a - $b)/2 + 9 * $c * $PI**2/8));
ENDDOCUMENT();




