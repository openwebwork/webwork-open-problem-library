#######################
## Initialization

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "MathObjects.pl",
	   "PGcourse.pl"
          );

TEXT(beginproblem());

###################################
# Setup

$a = random(2,9,1)*(-1)**random(1,2,1);
$b = random(2,9,1)*(-1)**random(1,2,1);

Context("Numeric");
Context( )->variables->add(n => ['Real', limits=>[1,20], 
    resolution=>1]);

###################################
# Main text

TEXT(EV2(<<EOT));
$BR
Suppose that \(n\) is constant. $BR $BR

Compute
\(\frac{d}{dx}($a\ x+$b)^n =\) 
\{ans_rule(20) \} $BR
EOT

###################################
## Answer evaluation

$showPartialCorrectAnswers = 1;
$solutionexits=1;

$ans1 = Compute("$a*n*($a*x+$b)**(n-1)");
$ans1->{limits} = [[2,-$b/$a+1],[5,20]];

ANS($ans1->cmp);

ENDDOCUMENT();
