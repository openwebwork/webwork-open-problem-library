# DESCRIPTION
# Identify the correct Venn diagram given
# a set expression
# WeBWorK problem written by Michael E. O'Sullivan
# and Thomas Schmidt
# ENDDESCRIPTION

## DBsubject(Set theory and logic)
## DBchapter(Operations on sets)
## DBsection(Venn diagrams)
## Institution(SDSU)
## Author(Thomas Schmidt','Michael E. O'Sullivan)
## Level(3)


############################
# Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 0;

# image width and height
$width = 200;
$height = 200;

@images = (image("venn3.gif",width=>$width,height=>$height),
           image("venn6.gif",width=>$width,height=>$height),
           image("venn18.gif",width=>$width,height=>$height),
           image("venn24.gif",width=>$width,height=>$height));
           
$answer = $images[1];

$expr = "A - B";

$radio = new_multiple_choice();
$radio->qa("Which of the following Venn diagrams corresponds to \($expr\)?",$answer);
$radio->extra($images[0],$images[2],$images[3]);

############################
# Main Text

Context()->texStrings;
BEGIN_TEXT
\{$radio->print_q()\} $BR
\{$radio->print_a()\}
END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

ANS(radio_cmp($radio->correct_ans()));

############################
# Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR Solution: $PAR
The Venn diagram for \($expr\) is $PAR
$answer
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
