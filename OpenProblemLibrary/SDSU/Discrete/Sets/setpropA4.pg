############################
# Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 0;

$expr = "(A\cup B)\cap (A\cup C) = (B\cap C)\cup A";
$answer = "Distributivity";
@otherAns = ("Associativity","Commutativity","De Morgan's Law");

$radio = new_multiple_choice();
$radio->qa("",$answer);
$radio->extra(@otherAns);

############################
# Main Text

Context()->texStrings;
BEGIN_TEXT
$BR
$BR
Identify the correct property for the following expression. $BR $BR 
\($expr\) $BR
\{$radio->print_a()\}
END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

ANS(radio_cmp($radio->correct_ans()));

############################
# Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR Solution: $PAR
\($expr\) $PAR
This operation is possible due to the law of $BBOLD $answer $EBOLD.
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
