############################
# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 0;

$var1 = "W";
$var2 = "X";
@set1 = ("a","b","c","d","e");
@set2 = ("a","c","f");
$pretty1 = join(",",@set1);
$pretty2 = join(",",@set2);

@answer1 = difference(~~@set1,~~@set2);
$prettyans1 = join(",",@answer1);
@answer2 = difference(~~@set2,~~@set1);
$prettyans2 = join(",",@answer2);

$radio1 = new_multiple_choice();
$radio1->qa("Determine \($var1-$var2\)","\(\lbrace $prettyans1\rbrace\)");
$radio1->extra("\(\lbrace\rbrace\)","\(\lbrace 1,2,3\)","\(\lbrace 1,2,3,4,5\rbrace\)","\(\lbrace 0,0,0,4,5\rbrace\)");

$radio2 = new_multiple_choice();
$radio2->qa("Determine \($var2-$var1\)","\(\lbrace $prettyans2\rbrace\)");
$radio2->extra("\(\lbrace 0,0,0\rbrace\)","\(\lbrace 1,2,3\rbrace\)","\(\lbrace 1,2,3,4,5\rbrace\)","\(\lbrace 4,5\rbrace\)");

# takes parameters difference(\@set1,\@set2)
# make sure sets being passed in have "string" elements, e.g. ("1","2","3") instead of (1,2,3)
# comparison will not work otherwise
# returns @set1 - @set2
# returns array
sub difference {
	my $tmp1 = shift;
	my $tmp2 = shift;
	
	my @a = @{$tmp1};
	my @b = @{$tmp2};
	my @result = ();
	
	foreach my $i (0..scalar(@a)-1) {
		foreach my $j (0..scalar(@b)-1) {
			if ($a[$i] eq $b[$j]) {
				last;
			}
			if ($j == scalar(@b)-1) {
				push(@result,$a[$i]);
			}
		}
	}
	return @result;
}

