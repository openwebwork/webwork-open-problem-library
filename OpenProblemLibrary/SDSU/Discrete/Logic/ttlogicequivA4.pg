# DESCRIPTION
# Using a truth table to detemine the 
# equivalence of two logical statements
# WeBWorK problem written by Michael E. O'Sullivan
# and Thomas Schmidt
# ENDDESCRIPTION

## DBsubject('Discrete Mathematics')
## DBchapter('Logic')
## DBsection('Reasoning')
## KEYWORDS('truth table')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')
## Author('Thomas Schmidt','Michael E. O'Sullivan')
## Institution('SDSU')


############################
# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 0;

@answer = qw(F 
	     T 
	     T 
	     F);
Context()->strings->add(T=>{},F=>{});

@fullsol = qw(T T F
			T F T
			F T T
			F F F);

############################
# Main Text

Context()->texStrings;
BEGIN_TEXT
Complete the truth table for the following statement: $PAR
$BCENTER
\(\text{p xor q}\)
$BR
$BR
\{
begintable(3).
row("\(p\)","\(q\)","\(\text{p xor q}\)").
row("T","T",ans_rule(1)).
row("T","F",ans_rule(1)).
row("F","T",ans_rule(1)).
row("F","F",ans_rule(1)).
endtable();
\}
$ECENTER
END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

foreach my $i (@answer) {
  ANS(String($i)->cmp());
}

############################
# Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR Solution: $PAR
The correct truth table is as follows: $PAR
\{
begintable(3).
row("\(p\)","\(q\)","\(\text{p xor q}\)").
row($fullsol[0],$fullsol[1],$fullsol[2]).
row($fullsol[3],$fullsol[4],$fullsol[5]).
row($fullsol[6],$fullsol[7],$fullsol[8]).
row($fullsol[9],$fullsol[10],$fullsol[11]).
endtable();
\}
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
