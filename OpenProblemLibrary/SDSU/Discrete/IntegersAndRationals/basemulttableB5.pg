############################
# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 1;

$base = 5;

# populate answer array
@answer = ();
foreach my $i (1..$base-1) {
	foreach my $j (1..$base-1) {
		my $n = baseb(($i * $j),$base);
		push(@answer,$n);
	}
}

# takes parameters baseb(number, tobase), only works for bases up to 10
# uses Euclidian Algorithm
sub baseb {
	my $n = shift;
	my $d = shift;
	
	my $q = int($n/$d);
	my $r = ($n % $d);
	
	my @result = ();
	$result[0] = $r;
	while ($q != 0) {
		$n = $q;
		$q = int($n/$d);
		$r = ($n % $d);
		push(@result,$r);
	}
	
	return reverse(join("",@result));
}

