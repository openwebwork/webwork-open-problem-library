############################
# Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 0;

$expr = "a+0 = ";
$answer = "a";
Context()->strings->add("a"=>{});

$correctAns = "Additive Identity";
@otherAns = ("Commutativity","Associativity","Additive Inverse","Multiplicative Identity","Multiplicative Inverse");

$radio = new_multiple_choice();
$radio->qa("",$correctAns);
$radio->extra(@otherAns);

############################
# Main Text

Context()->texStrings;
BEGIN_TEXT
$BR
\($expr\) \{ans_rule(5)\}
$BR
Which property does this expression demonstrate?
\{$radio->print_a()\}
END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

ANS(String($answer)->cmp());
ANS(radio_cmp($radio->correct_ans()));

############################
# Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR Solution: $PAR
\($expr $answer\) $BR
This property is known as the $BBOLD $correctAns $EBOLD $BR
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
