# DESCRIPTION
# Identify the correct property related to rational
# numbers
# WeBWorK problem written by Michael E. O'Sullivan
# and Thomas Schmidt
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Properties)
## Institution(SDSU)
## Author(Thomas Schmidt','Michael E. O'Sullivan)
## Level(1)
## MO(1)


############################
# Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextString.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 0;

Context("String");
$expr = "\(r\cdot\) \{ans_rule(5)\} \( = 1\)";
$answer = "1/r";
Context()->strings->add("1/r"=>{});

$correctAns = "Multiplicative Inverse";
@otherAns = ("Commutativity","Additive Identity","Additive Inverse","Multiplicative Identity","Associativity");

$radio = new_multiple_choice();
$radio->qa("",$correctAns);
$radio->extra(@otherAns);

############################
# Main Text

Context()->texStrings;
BEGIN_TEXT
$BR
\(r\cdot\) \{ans_rule(5)\} \( = 1\)
$BR
$BR
Which property does this expression demonstrate?
\{$radio->print_a()\}
END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

ANS(String($answer)->cmp());
ANS(radio_cmp($radio->correct_ans()));

############################
# Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR Solution: $PAR
\(r\cdot \frac{1}{r} = 1\) $BR
This property is known as the $BBOLD $correctAns $EBOLD $BR
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
