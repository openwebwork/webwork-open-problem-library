  "PGcourse.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 0;

$a = 17;
$b = 32;

$answer = Compute(lcm($a,$b));

sub lcm {
	my $x = shift;
	my $y = shift;

	return abs($x*$y)/gcd($x,$y);
}

sub gcd {
	my $n = shift;
	my $d = shift;
	my $r = ($n % $d);

	while ($r > 0) {
		$n = $d;
		$d = $r;
		$r = ($n % $d);
	}
	return $d;	
}

