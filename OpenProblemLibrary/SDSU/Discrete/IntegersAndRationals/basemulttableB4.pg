row(2,ans_rule(2),ans_rule(2),ans_rule(2)).
row(3,ans_rule(2),ans_rule(2),ans_rule(2)).
endtable();
\}
END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

foreach my $i (@answer) {
	ANS(Compute($i)->cmp());
}

############################
# Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
