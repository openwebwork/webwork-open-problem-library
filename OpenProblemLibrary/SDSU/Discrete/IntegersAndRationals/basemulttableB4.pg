row(" ",1,2,3).
row(1,$answer[0],$answer[1],$answer[2]).
row(2,$answer[3],$answer[4],$answer[5]).
row(3,$answer[6],$answer[7],$answer[8]).
endtable();
\}
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
