## KEYWORDS('limits', 'sequences')


## Shotwell cleaned

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers=1;

TEXT(qq!
Enter the integer which is the apparent limit of the following sequences
or enter $BITALIC N $EITALIC if the sequence does not appear to have a limit.
$BR$BR
!
);
$limit1=random(1,9,1);
$limit2=$limit1-1;
$limit3=random(0,4,1);
$limit4=random(1,9,1);
$limit5=random(1,9,1);
$limit6=random(1,9,1);
$limit7=random(1,9,1);
$limit8=random(1,6,1);
$fixit = 0;
$fixit = 1 if $limit3 ==0;   # adjust for the fact that x^0 is always 1
$ans1 = $limit1;
$ans2=1;
$ans3=$limit4+$fixit;
$ans4=$limit5+$fixit;
$ans5="N";
if ($limit3 ==0) {$ans6= "N";} else {$ans6=$limit7;}
$ans7=2;
$ans8=$limit8;
# Enter the questions and corresponding answers
@questStr=();
@ansStr=();
qa (~~@questStr,~~@ansStr,
" $limit1.234, $limit2.98,$limit1.123,  $limit1.034, $limit2.99, $limit1.001, $limit2.999
...",
	"$ans1",
"\(\sqrt{3}, \sqrt{\sqrt{3}}, \sqrt{\sqrt{\sqrt{3}}}, ...\)",
	"$ans2",
"the sequence generated by $f(h)$ where $h$ is a sequence of positive numbers approaching zero and ${BM}f(x)=x^$limit3+$limit4${EM} if x is greater than or equal to 0 and \( f(x)=-x^$limit3+$limit4 \) if x is less than zero.",
	"$ans3",
"the sequence generated by ${BM}f(h)${EM} where  ${BM}h${EM} is a sequence
 of negative numbers approaching zero and ${BM}f(x)=x^$limit3+$limit5${EM}
  if ${BM}x${EM} is greater than or equal to 0 and ${BM}f(x)=-x^$limit3-$limit5${EM}
   if ${BM}x${EM} is less than zero.",
	"-$ans4",
"the sequence generated by ${BM}f(h)${EM} where  ${BM}h${EM}
 is any sequence of numbers approaching zero and ${BM}f(x)=x^$limit3+$limit6${EM}
  if ${BM}x${EM} is greater than 0 and ${BM}f(x)=-x^$limit3-$limit6${EM}
  if ${BM}x${EM} is less than zero.",
	"$ans5",
"the sequence generated by ${BM}f(h)${EM} where ${BM}h${EM}
 is any sequence of numbers approaching zero and ${BM}f(x)=x^$limit3+$limit7${EM}
  if ${BM}x${EM} is greater than or equal to 0 and ${BM}f(x)=-x^$limit3+$limit7${EM}
   if ${BM}x${EM} is less than zero.",
	"$ans6",
" 2.199505sin(1.8), 2.199505sin(2.199505sin(1.8)),
       2.199505sin(2.199505sin(2.199505sin(1.8))),  ...",
	"$ans7",
"the sequence generated by ${BM}f(h)${EM} where ${BM}h${EM} is a sequence of positive
 numbers approaching zero and ${BM}f(x)=$limit8\tan(x)/x${EM}.",
	"$ans8",
);
@slice = &NchooseK(8,4);

TEXT(
match_questions_list(@questStr[@slice]),
);

ANS(str_cmp( [@ansStr[@slice]]  ) );

ENDDOCUMENT();        # This should be the last executable line in the problem.
