DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,15,1);
$b= random(2, 15,1);
while ($b==$a) {
   $b=random(1, 15, 1);
}

BEGIN_TEXT
$BR
Evaluate the limit using L'Hospital's rule if necessary.
\[ \lim_{ x \rightarrow 0 } \frac{$a^{x}-$b^{x}}{
x} \]
$BR Answer: \{ans_rule(25) \}
$BR
END_TEXT

$ans = "ln($a/$b)";
ANS(num_cmp($ans));

