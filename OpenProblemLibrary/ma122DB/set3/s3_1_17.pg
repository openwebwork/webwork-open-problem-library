##DESCRIPTION
##  Find a derivative of a fraction of two
##  polynomials, evaluate it at a point
##ENDDESCRIPTION
## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Derivatives of polynomials and power functions)
## Date(6/3/2002)
## Institution(ASU)
## MLT(rational_distribute_denominator_eval)
## MO(1)
## Level(3)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('6')
## Section1('3.1')
## Problem1('23')
## TitleText2('Calculus: Early Transcendentals')
## AuthorText2('Rogawski')
## EditionText2('1')
## Section2('3.3')
## Problem2('23')
## KEYWORDS('derivatives','Derivative', 'Power')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"MathObjects.pl",
"PGauxiliaryFunctions.pl",
"AnswerFormatHelp.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(2,7,1);
$b1 = random(2,8,1);
$c1 = random(2,7,1);
$d1 = random(2,6,1);
$n1 = random(3,7,1);
$x = random(2,5,1);
$x2 = $x**2;

BEGIN_TEXT
Let \( f(x) = \displaystyle  \frac { $a1 x^2 + $b1 x + $c1 } {\sqrt{x} } \).  Find the following:
$PAR
\( f'( x ) =\) \{ans_rule(48) \}
$PAR
\( f'( $x2 ) = \) \{ans_rule(48) \}
END_TEXT

Context("Numeric")->flags->set(limits=>[0,5]);

$ans1 = Compute("(3/2)*$a1*x^(1/2) + ($b1/2)*x^(-1/2) - ($c1/2)*x^(-3/2)");

$numer = 3*$a1*$x**4+$b1*$x**2-$c1;
$denom = 2*$x**3;
($ansnum,$ansdenom) = reduce($numer,$denom);

if($ansdenom == 1) {
$ans2 = Compute($ansnum)
}
else {
$ans2 = Compute("$ansnum/$ansdenom");
}

ANS($ans1->cmp());
ANS($ans2->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
