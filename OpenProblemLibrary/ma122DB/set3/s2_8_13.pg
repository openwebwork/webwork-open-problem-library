DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(2,7,1);
$b1 = random(2,12,1);
$c1 = random(1,40,1);
$x1 = random(1,5,1);

Context("Numeric");
Context()->variables->add(a=>"Real");

$funct1 = Compute("$a1*x^2-$b1 * x - $c1");
$deriv1 = ($funct1->D)->substitute(x=>"a");

Context()->texStrings;

BEGIN_TEXT
If \( f(x) =  $funct1\), find \( f'( a ) \).
$BR$BR
Answer: \{ans_rule(48) \}
END_TEXT

ANS($deriv1->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
