DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
Context("Numeric");
$showPartialCorrectAnswers = 1;

$a1 = random(2,5,1);
$b1 = random(2,8,1);
$c1 = random(2,4,1);
$x1 = random(1,5,1);
$deriv1f= Formula("4*x^3+3*$a1*x^2+2*$b1*x+$c1");
$deriv1 = Real("4*$x1^3+ 3*$a1*$x1^2+2*$b1*$x1+$c1");
$deriv2f= Formula("12*x^2+ 6*$a1*x+2*$b1");
$deriv2 = Real("12*$x1^2+ 6*$a1*$x1+2*$b1");

BEGIN_TEXT
Let \( f(x) = x^4+ $a1 x^3 + $b1 x^2 + $c1 x  \). $BR$BR
\( f'( x )=\) \{ans_rule(20) \} $BR$BR
\( f'($x1)=\) \{ans_rule(20) \} $BR$BR
\( f''(x)=\) \{ans_rule(20) \} $BR$BR
\( f''($x1)=\) \{ans_rule(20) \}

END_TEXT

ANS($deriv1f->cmp);
ANS($deriv1->cmp);
ANS($deriv2f->cmp);
ANS($deriv2->cmp);

;

