DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl"
);

TEXT(beginproblem());
Context("Numeric");
$showPartialCorrectAnswers = 1;

$an = random(2,7,1);
$as = random(-1,1,2);
$a  = $an * $as;
$n = random(4,8,1);
$v = random(-1,1,2);

$c1 = ($v)**(-1+$n);
$c2 = ($v)**(-2+$n);

$deriv1 = Formula("$n * $c1 + $a * e^$v");
$deriv2 = Formula("$n * ($n - 1) * $c2 + $a * e^$v");

BEGIN_TEXT
Let \( f(x) =  x^$n + $a e^x \).
$BR$BR
(a) \( f'( $v ) = \) \{ans_rule(20) \}
$BR$BR
(b) \( f''( $v ) = \) \{ans_rule(20) \}

END_TEXT

ANS($deriv1->cmp);
ANS($deriv2->cmp);

;

ENDDOCUMENT();        # This should be the last executable line in the problem.
