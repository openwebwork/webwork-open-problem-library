DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$f = random(1,5,1);
$df = -random(1,5,1);
$g = -random(1,9,1);
$dg = random(1,9,1);
#$gabs = abs($g);

$fpg = Compute($df+$dg);
$fmg = Compute($df-($dg));
$fg = Compute($df*$g+$f*$dg);
$fognum = $df*$g-($f*$dg);
$fogdenom = ($g)**2;
$fog = Compute("$fognum/$fogdenom");
#$fog = "($df*$g-($f*$dg))/$gabs^2";

$a = non_zero_random(-5,5,1);

BEGIN_TEXT
Given that
$BR$BR
\( f($a) =  $f ,\  f'($a)=$df \),$BR
\( g($a) =  $g , \  g'($a)=$dg \),
$BR$BR
calculate the following:
$BR$BR
\((f+g)'($a) = \) \{ans_rule(10) \}
$BR
\((f-g)'($a) = \) \{ans_rule(10) \}
$BR
\((f\cdot g)'($a) = \) \{ans_rule(10) \}
$BR
\((f/g)'($a) = \) \{ans_rule(10) \}
END_TEXT

ANS($fpg->cmp());
ANS($fmg->cmp());
ANS($fg->cmp());
ANS($fog->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
