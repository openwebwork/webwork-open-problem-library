DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$f = random(2,5,1);
$df = random(2,5,1);
$g = random(1,9,1);
$dg = random(1,9,1);

$fg = Compute($df*$g+$f*$dg);
$fognum = $df*$g-($f*$dg);
$fogdenom = $g**2;
$fog = Compute("$fognum/$fogdenom");
$gofnum = $dg*$f-($g*$df);
$gofdenom = $f**2;
$gof = Compute("$gofnum/$gofdenom");
#$fog = "($df*$g-($f*$dg))/$g^2";
#$gof = "($dg*$f-($g*$df))/$f^2";

$a = non_zero_random(-5,5,1);

BEGIN_TEXT
Given that: $BR$BR\( f($a) = $f,\ f'($a) = $df\),$BR
\(g($a) = $g,\ g'($a) = $dg \),$BR$BR
calculate the following:
$BR$BR
\((fg)'($a) = \) \{ans_rule(30) \}
$BR$BR
\((f/g)'($a) = \) \{ans_rule(30) \}
$BR$BR
\((g/f)'($a) = \) \{ans_rule(30) \}

END_TEXT

ANS($fg->cmp());
ANS($fog->cmp());
ANS($gof->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
