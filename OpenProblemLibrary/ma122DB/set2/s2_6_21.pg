DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a = random(2,11,1);
$b = random(2,11,1);

BEGIN_TEXT
Evaluate the limit

\[ \lim_{ x \rightarrow \infty } \sqrt{ x^2+$a } - \sqrt{x^2-$b}  \]

Answer: \{ans_rule(15) \}
END_TEXT

ANS(num_cmp(0));

