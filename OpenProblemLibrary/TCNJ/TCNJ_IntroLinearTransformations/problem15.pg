DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix')->variables->are('a'=>'Real','b'=>'Real','c'=>'Real');

$a11 = non_zero_random(-9,9,1);
$a12 = non_zero_random(-9,9,1);
$a13 = non_zero_random(-9,9,1);

$a21 = non_zero_random(-9,9,1);
$a22 = non_zero_random(-9,9,1);
$a23 = non_zero_random(-9,9,1);

$u1 = non_zero_random(-5,5,1);
$u2 = non_zero_random(-5,5,1);
$u3 = non_zero_random(-5,5,1);

$A = Matrix([
[$a11, $a12, $a13], 
[$a21, $a22, $a23],
]);

$u = Matrix([[$u1], [$u2],[$u3]]);

$Au = $A * $u;

$v = Matrix([["a"],["b"],["c"]]);

$x = Formula("(a*$a11+$a12*b+$a13*c)")->reduce;
$y = Formula("(a*$a21+$a22*b+$a23*c)")->reduce;

$Av = Matrix([[$x],[$y]]);

Context()->texStrings;
BEGIN_TEXT
Let \[ A = $A. \]
Define the linear transformation \( T: {\mathbb R}^3 \rightarrow {\mathbb R}^2\) by \(T(\vec{x}) = A\vec{x}\).
Find the images of  \(\vec{u}  = $u \) and \(\vec{v} =$v\) under \(T\).  
$BR
$BR
\( T(\vec{u}) = \) \{ $Au->ans_array \} 
$BR
$BR
\( T(\vec{v}) = \) \{ $Av->ans_array \} 
END_TEXT
Context()->normalStrings;

ANS($Au->cmp);
ANS($Av->cmp);

;
ENDDOCUMENT();
