DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
 
TEXT(beginproblem());    
# Do not show which answers are incorrect.
$showPartialCorrectAnswers = 0;

Context("Numeric");

# FIRST MATRIX
$eig = random(-9,9,1);

#$a= new Matrix(2,2);

$a11 = random(-1,1,2);
$a12 = non_zero_random(-3,3,1);
$mult = non_zero_random(-2,2,1);
$a21 = $mult * $a11;
$b1 = random(-1,1,2);
$a22 = $mult * $a12 + $b1;

$a = Matrix([[$a11,$a12],[$a21,$a22]]);

$b = $a->inverse;

$e = Matrix([[$eig, non_zero_random(-2,2,1)],[0,$eig]]);

$matrix = $a * $e *$b;
 
@m = $matrix->value;
foreach $i (0..1){
   foreach $j (0..1){
        $m[$i][$j] = round($m[$i][$j]);
   }
}
$matrix[0] = Matrix(@m);

# SECOND MATRIX

$a11 = random(-1,1,2);
$a12 = non_zero_random(-3,3,1);
$mult = non_zero_random(-2,2,1);
$a21 = $mult * $a11;
$b1 = random(-1,1,2);
$a22 = $mult * $a12 + $b1;

$a = Matrix([[$a11,$a12],[$a21,$a22]]);
$b = $a->inverse;

$e11 = non_zero_random(-8,8,1);
do { $e22 = non_zero_random(-8,8,1); } until ($e11 != $e22);
$e = Matrix([[$e11,0],[0,$e22]]);

$matrix2 = $a * $e *$b;

@m2 = $matrix2->value;
foreach $i (0..1){
    foreach $j (0..1){
        $m2[$i][$j] = round($m2[$i][$j]);
    }
}
$matrix[1] = Matrix(@m2);

# THIRD MATRIX

$a11 = non_zero_random(-7,7,2);
$b1 = random(2,9,1);
$r = random(-1,1,2);
$a12 = $b1 * $r;
$a21 = non_zero_random(-9,9,1);
if ($a12 * $a21 > 0) { $a21 = -1 * $a21; }
$a22 = random($a11-2, $a11+2,1);

$matrix[2] = Matrix([[$a11,$a12],[$a21,$a22]]);

## FOURTH MATRIX

$a11 = random(-1,1,2);
$a12 = non_zero_random(-3,3,1);
$mult = non_zero_random(-2,2,1);
$a21 = $mult * $a11;
$b1 = random(-1,1,2);
$a22 = $mult * $a12 + $b1;

$a = Matrix([[$a11,$a12],[$a21,$a22]]);

$b = $a->inverse;

$e11 = non_zero_random(-8,8,1);
do { $e22 = non_zero_random(-8,8,1); } until ($e11 != $e22);
$e = Matrix([[$e11,0],[0,$e22]]);


$matrix4 = $a * $e *$b;

@m4 = $matrix4->value;
foreach $i (0..1){
    foreach $j (0..1){
        $m4[$i][$j] = round($m4[$i][$j]);
    }
}
$matrix[3] = Matrix(@m4);

$mc[0] = PopUp(["?","Distinct Real", "Repeated Real", "Complex"], "Repeated Real");
$mc[1] = PopUp(["?","Distinct Real", "Repeated Real", "Complex"], "Distinct Real");
$mc[2] = PopUp(["?","Distinct Real", "Repeated Real", "Complex"], "Complex");
$mc[3] = PopUp(["?","Distinct Real", "Repeated Real", "Complex"], "Distinct Real");

# randomize the sequence of matrices and questions
@seq = NchooseK(4,4);

Context()->texStrings;
BEGIN_TEXT

Determine whether the eigenvalues of each matrix are distinct real, repeated real, or complex.
$PAR
\($matrix[$seq[0]]\) \{$mc[$seq[0]]->menu()\}

$PAR
\($matrix[$seq[1]]\) \{$mc[$seq[1]]->menu()\}

$PAR
\($matrix[$seq[2]]\) \{$mc[$seq[2]]->menu()\}

$PAR
\($matrix[$seq[3]]\) \{$mc[$seq[3]]->menu()\}

END_TEXT
Context()->normalStrings;

ANS($mc[$seq[0]]->cmp());
ANS($mc[$seq[1]]->cmp());
ANS($mc[$seq[2]]->cmp());
ANS($mc[$seq[3]]->cmp());

ENDDOCUMENT();
