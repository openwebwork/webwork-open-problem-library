DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context('Matrix');

$eig = random(-9,9,1);

# define invertible matrix
        $a11 = random(-1,1,2);
        $a12 = non_zero_random(-3,3,1);
        $mult = non_zero_random(-2,2,1);
        $a21 = $mult * $a11;
        $b1 = random(-1,1,2);
        $a22 = $mult * $a12 + $b1;

        $a_det = $a11 * $b1;

$a = Matrix([
[$a11,$a12],
[$a21,$a22],
]);

# define inverse matrix
$b = $a->inverse;

$e = Matrix([
[$eig,non_zero_random(-2,2,1)],
[0,$eig],
]);

$matrix = $a * $e *$b;


$lambda[1] = Compute("$eig");
$vec[1] = $a->column(1);

Context()->texStrings;
BEGIN_TEXT
The matrix.
\[ A = $matrix. \]
has an eigenvalue \(\lambda\) of multiplicity 2 with 
corresponding eigenvector \(\vec{v}\).  Find \( \lambda \)
and \( \vec{v} \).
$BR
$BR
\( \lambda = \) \{ $lambda[1]->ans_rule(5) \}
has an eigenvector \( \vec{v} = \) \{ $vec[1]->ans_array(5) \}.
END_TEXT
Context()->normalStrings;

ANS($lambda[1]->cmp);
ANS($vec[1]->cmp(checker => ~~&basis_checker_one_column ));

COMMENT('Repeated eigenvalues and defective matrix.');
ENDDOCUMENT();
