DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Fraction')->parens->set("[" => {formMatrix => 1});
Context()->flags->set(
  tolerance => 0.001,
  tolType => "absolute",
);

do {

$u1 = Fraction(non_zero_random(-7,7,1));
$u2 = Fraction(non_zero_random(-6,6,2));

$y1 = Fraction(random(-10,10,1));
$y2 = Fraction(random(-9,9,2));

} until ($u1 * $y2 != $u2 * $y1);

$yu = $y1 * $u1 + $y2 * $u2;
$norm2u = $u1 * $u1 + $u2 * $u2; 
$projyu = $yu/$norm2u; 

$ans1 = $projyu * $u1;
$ans2 = $projyu * $u2;
$ans3 = $y1 - $ans1;
$ans4 = $y2 - $ans2;

$answer1 = Matrix([$ans1,$ans2])->transpose;
$answer2 = Matrix([$ans3,$ans4])->transpose;

Context()->texStrings;
BEGIN_TEXT
Let \(\vec{y}= \{Matrix([[$y1], [$y2]])\} \) and \(\vec{u}= \{Matrix([[$u1], [$u2]])\} \).
Write \(\vec{y}\) as the sum of two orthogonal vectors, \(\vec{x}_{1}\) in \( Span\left\lbrace u\right\rbrace \) and \(\vec{x}_{2}\) orthogonal to \(\vec{u}\).
$BR
$BR
\(\vec{x}_{1}=\) \{ $answer1->ans_array(15) \},
\(\vec{x}_{2}=\) \{ $answer2->ans_array(15) \}.
END_TEXT
Context()->normalStrings;

ANS($answer1->cmp);
ANS($answer2->cmp);
COMMENT('MathObject version');
ENDDOCUMENT();