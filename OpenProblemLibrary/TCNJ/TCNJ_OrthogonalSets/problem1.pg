DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

#Context('Fraction')->parens->set("[" => {formMatrix => 1});
#Context()->flags->set(
#  tolerance => 0.001,
#  tolType => "absolute",
#);
Context('Matrix');

do {

$x1 = Real(non_zero_random(-7,7,1));
$x2 = Real(non_zero_random(-6,6,2));

$v1 = Real(random(-10,10,1));
$v2 = Real(random(-9,9,2));

} until ($x1 * $v2 != $x2 * $v1);

$vx = $v1 * $x1 + $v2 * $x2;
$norm2x = $x1 * $x1 + $x2 * $x2; 
$projvx = $vx/$norm2x; 

$ans1 = $projvx * $x1;
$ans2 = $projvx * $x2;

$ans = Matrix([$ans1,$ans2])->transpose;

Context()->texStrings;
BEGIN_TEXT
Compute the orthogonal projection of 
\(\vec{v}= \{Matrix([[$v1], [$v2]])\} \)
onto the line \(L\) through \(\{Matrix([[$x1], [$x2]])\}\) and the origin.
$BR
$BR
\( {\rm proj}_L(\vec{v})= \) \{ $ans->ans_array(15) \}.
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
;
