DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x1 = non_zero_random(-7,7,1);
$y1 = non_zero_random(-6,6,2);
$x2 = random(-1,1,2);
$y2 = - ($x1 * $y1) / $x2;

$v1 = random(-10,10,1);
$v2 = random(-10,10,1);

$vx = $v1 * $x1 + $v2 * $x2;
$norm2x = $x1 * $x1 + $x2 * $x2; 
$c1 = $vx/$norm2x; 

$vy = $v1 * $y1 + $v2 * $y2;
$norm2y = $y1 * $y1 + $y2 * $y2; 
$c2 = $vy/$norm2y;

BEGIN_TEXT

\{ mbox( 'Given \(v=\)', display_matrix([[$v1], [$v2]]), ',' ) \} 
find the coordinates for \(v\) in the subspace \(W\) spanned by  
\{ mbox( '\(u_{1}=\)', display_matrix([[$x1], [$x2]]), 'and \(u_{2}=\)', display_matrix([[$y1], [$y2]]), '.' ) \}
Note that \(u_{1}\) and \(u_{2}\) are orthogonal.
$BR
$BR
\(v=\) \{ans_rule(10)\} \(u_{1}+\) \{ans_rule(10)\} \(u_{2}\)

END_TEXT

ANS(num_cmp($c1));
ANS(num_cmp($c2));

ENDDOCUMENT();       # This should be the last executable line in the problem.