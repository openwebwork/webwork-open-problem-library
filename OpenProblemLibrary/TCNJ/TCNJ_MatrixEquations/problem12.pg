DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

foreach $i (1..2) {
        $a1[$i] = non_zero_random(-5,5,1);
        $a2[$i] = random(6,10,1)*random(-1,1,2);
        $b[$i] = non_zero_random(-20,20,1);
}

$A = Matrix([
[ $a1[1], $a2[1] ],
[ $a1[2], $a2[2] ],
]);

$A1 = $A->column(1);
$A2 = $A->column(2);

$b = Matrix([ $b[1], $b[2] ])->transpose;

Context()->texStrings;
BEGIN_TEXT
The vector \( $b \) is a linear combination of the vectors \( $A1 \) and \( $A2 \)
if and only if the matrix equation \( A\vec{x}=\vec{b} \) has a solution \( \vec{x} \), where
$BR
$BR
$BCENTER
\( A = \) \{ $A->ans_array \} and
\( \vec{b} \) \{ $b->ans_array \}.
$ECENTER
END_TEXT
Context()->normalStrings;

ANS($A->cmp);
ANS($b->cmp);
COMMENT('MathObject version');
ENDDOCUMENT();