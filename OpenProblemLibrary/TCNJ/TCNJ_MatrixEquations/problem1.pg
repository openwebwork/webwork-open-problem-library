sub mycheck{
  my ($c, $s, $ansHash ) = @_;
  $s = Matrix($s);
  # Put the columns of A that have pivots into B.
  # Solve s = B x for x using
  # x = (B^T B)^{-1} B^T s.
  # Then, check that s is NOT in the span of B by 
  # s != Bx.
  my $B = Matrix([[$a11,$a12],[$a21,$a22],[$a31,$a32]]);
  my $BT = $B->transpose;
  my $x =  (($BT * $B)->inverse) * ($BT) * $s;
  return $s != $B * $x;
}

ANS($answer->cmp(checker=>~~&mycheck));
