DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "unionLists.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

Context('Matrix');

$NO_SPACE = '@{}';

$a = random(2,10,1)*random(-1,1,2);
$b = random(2,10,1)*random(-1,1,2);
$c = random(2,10,1)*random(-1,1,2);
$d = random(2,10,1)*random(-1,1,2);
$e = random(2,10,1)*random(-1,1,2);
$f = random(2,10,1)*random(-1,1,2);
$g = random(2,10,1)*random(-1,1,2);
$h = random(2,10,1)*random(-1,1,2);
$i = random(2,10,1)*random(-1,1,2);
$j = random(2,10,1)*random(-1,1,2);
$k = random(2,10,1)*random(-1,1,2);
$l = random(2,10,1)*random(-1,1,2);
$m = random(2,10,1)*random(-1,1,2);
$n = random(2,10,1)*random(-1,1,2);
$o = random(2,10,1)*random(-1,1,2);
$p = random(2,10,1)*random(-1,1,2);
$q = random(2,10,1)*random(-1,1,2);
$r = random(2,10,1)*random(-1,1,2);

@matrices = (
"\left\lbrack
\begin{array}{rr|r}
1 & 0 & $a \\
0 & 1 & $b \\
0 & 0 & 0
\end{array}
\right\rbrack"
,
"\left\lbrack
\begin{array}{rrr|r}
1 & 0 & 0 & $c \\
0 & 1 & 0 & $d \\
0 & 0 & 1 & $e
\end{array}
\right\rbrack"
,
"\left\lbrack
\begin{array}{rrr|r}
1 & $f & $g & $q \\
0 & 0 & 0 & 0
\end{array}
\right\rbrack"
,
"\left\lbrack
\begin{array}{rr|r}
1 & $r & $h \\
0 & 0 & 0 \\
0 & 0 & 0
\end{array}
\right\rbrack"
,
"\left\lbrack
\begin{array}{rrrr|r}
1 & 0 & 0 & $i & $j \\
0 & 1 & 0 & 0 & $k \\
0 & 0 & 1 & 0 & $l
\end{array}
\right\rbrack"
,
"\left\lbrack
\begin{array}{rrrr|r}
1 & 0 & 0 & $m & $n \\
0 & 1 & $o & 0 & $p \\
0 & 0 & 0 & 0 & 0
\end{array}
\right\rbrack"
);


@corans = ('Two', 'Three',
	   'One', 'One',
   'Three', 'Two',
);

@slice=NchooseK(6,6);

@smatrices = @matrices[@slice];
@scorans = @corans[@slice];

foreach my $i (0..3) {
$popup[$i] = PopUp(['Choose','Zero','One','Two','Three','Four'],$scorans[$i]);
}

Context()->texStrings;
BEGIN_TEXT
How many determined (basic) variables does each augmented matrix have?
$BR
$BR
\{ BeginList('OL',type=>'a') \}
$ITEM
\{ $popup[0]->menu \} \( $smatrices[0] \)
$ITEMSEP
$ITEM
\{ $popup[1]->menu \} \( $smatrices[1] \)
$ITEMSEP
$ITEM
\{ $popup[2]->menu \} \( $smatrices[2] \)
$ITEMSEP
$ITEM
\{ $popup[3]->menu \} \( $smatrices[3] \)
\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;

install_problem_grader(~~&std_problem_grader);

foreach my $i (0..3) {
ANS($popup[$i]->cmp);
}
;
ENDDOCUMENT();       # This should be the last executable line in the problem.
