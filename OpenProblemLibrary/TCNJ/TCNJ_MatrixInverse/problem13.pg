DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

do {

foreach $i (0..3) {
	foreach $j (0..3) {
		$a[$i][$j]=0;
	}
}

foreach $i (0..3) {
	$a[$i][$i]=non_zero_random(-5,5,1);
}

$a[0][1] = non_zero_random(-5,5,1);
$a[0][2] = random(-9,9,1);
$a[0][3] = random(-9,9,1);
$a[1][2] = non_zero_random(-5,5,1);
$a[1][3] = random(-9,9,1);
$a[2][3] = non_zero_random(-5,5,1);

$A = Matrix([
[ $a[0][0], $a[0][1], $a[0][2], $a[0][3] ],
[ $a[1][0], $a[1][1], $a[1][2], $a[1][3] ],
[ $a[2][0], $a[2][1], $a[2][2], $a[2][3] ],
[ $a[3][0], $a[3][1], $a[3][2], $a[3][3] ],
]);

} until ($A->det != 0);

$Ainv = $A->inverse;


Context()->texStrings;
BEGIN_TEXT
If \[ A = $A, \] 
then 
$BR
\( A^{-1} = \) \{ $Ainv->ans_array(5) \}.
END_TEXT
Context()->normalStrings;

ANS($Ainv->cmp);
COMMENT('Matrix is always upper triangular.');
ENDDOCUMENT();
