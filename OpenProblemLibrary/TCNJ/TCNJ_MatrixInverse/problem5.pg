DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

do {
$a = random(-1,1,2) * random(2,9,1);
$d = random(-1,1,2) * random(2,9,1);
$b = 0;
$c = 0;
} until ($a != $d);

$A = Matrix([[$a, $b], [$c, $d]]);

$Ainv = $A->inverse;


Context()->texStrings;
BEGIN_TEXT
If \[ A = $A, \] 
then 
$BR
\( A^{-1} = \) \{ $Ainv->ans_array(7) \}.
END_TEXT
Context()->normalStrings;

ANS($Ainv->cmp);
COMMENT('Matrix is always diagonal.');
ENDDOCUMENT();
