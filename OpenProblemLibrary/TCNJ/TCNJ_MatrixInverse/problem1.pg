DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

do {

$a = random(-9,9,2);
$d = random(-9,9,2);
$b = non_zero_random(-8,8,2);
$c = non_zero_random(-9,9,1);

$A = Matrix([
[$a,$b],
[$c,$d],
]);

$det = $a * $d - $b * $c;

} until ($A->det != 0);


$ans11 = $d / $det;
$ans12 = - $b / $det;
$ans21 = - $c / $det;
$ans22 = $a / $det ;

$Ainv = Matrix([
[$ans11,$ans12],
[$ans21,$ans22],
]);

$b1 = random(-5,5,1);
$b2 = non_zero_random(-5,5,1);

$B = Matrix([
[$b1],
[$b2],
]);

$X = $Ainv * $B;

Context()->texStrings;
BEGIN_TEXT
If \[ A = $A, \] 
then 
$BR
\( A^{-1} = \) \{ $Ainv->ans_array(7) \}.
$BR
$BR
Given \(\vec{b} = $B\), solve \(A\vec{x}=\vec{b}\).
$BR
$BR
\(\vec{x}=\) \{ $X->ans_array(7) \}.
END_TEXT
Context()->normalStrings;

ANS($Ainv->cmp);
ANS($X->cmp);
;
ENDDOCUMENT();
