DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

do {

$a11 = random(-1,1,1);
$b = non_zero_random(-1,1,1);
$a12 = $b * $a11;
$a21 = $a12;
$m = random(-1,1,2);
$a22 = $b * $a21 + $m;

$c = non_zero_random(-1,1,1);
$d = random(-1,1,1);
$n = random(-1,1,2);
$a13 = $c * $a11 + $d * $a12 + $n;
$a31 = $a13;
$a23 = $c * $a21 + $d * $a22;
$a32 = $a23;
$a33 = $c * $a31 + $d * $a32;

$A = Matrix([
[$a11,$a12,$a13],
[$a21,$a22,$a23],
[$a31,$a32,$a33],
]);

} until ($A->det != 0);

$Ainv = $A->inverse;


Context()->texStrings;
BEGIN_TEXT
If \[ A = $A, \] 
then 
$BR
\( A^{-1} = \) \{ $Ainv->ans_array(7) \}.
END_TEXT
Context()->normalStrings;

ANS($Ainv->cmp);
COMMENT('Matrix seems to have a nice enough inverse to compute by hand.');
ENDDOCUMENT();
