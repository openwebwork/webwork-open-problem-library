DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

do {

$a = random(-9,9,2);
$d = random(-9,9,2);
$b = non_zero_random(-8,8,2);
$c = $b;

$A = Matrix([[$a, $b], [$c, $d]]);

} until (($A->det != 0) and ($a != $d));

$Ainv = $A->inverse;


Context()->texStrings;
BEGIN_TEXT
If \[ A = $A, \] 
then 
$BR
\( A^{-1} = \) \{ $Ainv->ans_array(7) \}.
END_TEXT
Context()->normalStrings;

ANS($Ainv->cmp);
COMMENT('Matrix is always symmetric.');
ENDDOCUMENT();
