DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a11 = random(-5,5,1);
$a21 = random(-5,5,1); 
$a31 = random(-1,1,2);

$b = non_zero_random(-3,3,1);
$a12 = $b * $a11;
$m = random(-1,1,2);
$a22 = $b * $a21 + $m;
$a32 = $b * $a31;

$c = random(-3,3,1);
$d = random(-3,3,1);
$n = random(-1,1,2);
$a13 = $c * $a11 + $d * $a12 + $n;
$a23 = $c * $a21 + $d * $a22;
$a33 = $c * $a31 + $d * $a32;

$det = - $a31 * $m * $n;

$A = Matrix([
[$a11,$a12,$a13],
[$a21,$a22,$a23],
[$a31,$a32,$a33],
]);

$Ainv = $A->inverse;

$B = Matrix([
[random(-5,5,1)],
[non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1)],
]);

$X = $Ainv * $B;

Context()->texStrings;
BEGIN_TEXT
If \[ A = $A, \] 
then 
$BR
\( A^{-1} = \) \{ $Ainv->ans_array(7) \}.
$BR
$BR
Given \(\vec{b} = $B\), solve \(A\vec{x}=\vec{b}\).
$BR
$BR
\(\vec{x}=\) \{ $X->ans_array(7) \}.
END_TEXT
Context()->normalStrings;

ANS($Ainv->cmp);
ANS($X->cmp);
COMMENT('Inverse matrix is unimodular (has all integer entries and determinant +1 or -1).');
ENDDOCUMENT();
