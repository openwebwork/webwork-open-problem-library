TEXT(beginproblem());    
# Do not show which answers are incorrect.
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-4,4,1);
$b = non_zero_random(-4,4,1);
$c = non_zero_random(-3,3,1);

$x1 = $a;
$x2 = $c;
$x3 = $b;

$y1 = $b;
$y2 = 0;
$y3 = - $a;

$z1 = $a * $c;
$z2 = - $b * $b - $a * $a;
$z3 = $b * $c;

$u1 = random(-9,9,1);
$u2 = non_zero_random(-9,9,1);
$u3 = random(-9,9,1);
$dot1 = $u1*$x1+$u2*$x2+$u3*$x3;
$dot2 = $u1*$y1+$u2*$y2+$u3*$y3;
while($dot1==0&&$dot2==0){
    $u1 = random(-9,9,1);
    $u2 = non_zero_random(-9,9,1);
    $u3 = random(-9,9,1); }

$v1 = random(-9,9,1);
$v2 = non_zero_random(-9,9,1);
$v3 = random(-9,9,1);
$dot3 = $v1*$x1+$v2*$x2+$v3*$x3;
$dot4 = $v1*$y1+$v2*$y2+$v3*$y3;
while($dot3==0&&$dot4==0){
    $v1 = random(-9,9,1);
    $v2 = non_zero_random(-9,9,1);
    $v3 = random(-9,9,1); }

# Make a new checkbox multiple choice
