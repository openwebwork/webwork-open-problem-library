# Insert some  questions and matching answers in the q/a list

$tf -> qa ( 

mbox( '\( v = \)', display_matrix([[$y1], [$y2], [$y3]]) ), 
"Yes",

mbox( '\( v = \)', display_matrix([[$u1], [$u2], [$u3]]) ), 
"No",

mbox( '\( v = \)', display_matrix([[$v1], [$v2], [$v3]]) ), 
"No",            
);

$tf->choose(3);

