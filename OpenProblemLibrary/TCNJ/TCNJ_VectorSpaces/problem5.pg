BEGIN_TEXT

\{mbox( 'Let \(v_{1} = \)', display_matrix([[$r11],[$r21],[$r31]]), ', \(v_{2} = \)', display_matrix([[$r12],[$r22],[$r32]]), ', \(v_{3} = \)', display_matrix([[$r13],[$r23],[$r33]]), 'and \( w= \)', display_matrix([[$r14],[$r24],[$r34]]), '.' )\}
