DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGnumericalmacros.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$v01 = non_zero_random(-5,5,2);
$v02 = random(-5,5,1);
$v03 = non_zero_random(-5,5,1);

$mult = non_zero_random(-2,2,1);
$d1 = non_zero_random(-3,3,1);
$d2 = non_zero_random(-3,3,1);

$v11 = $mult*$v01;
$v12 = $mult*$v02+$d1;
$v13 = $mult*$v03+$d2;

$mult2 = non_zero_random(-2,2,1);
$mult3 = random(-2,2,1);
$d3 = non_zero_random(-5,5,1);
$v21 = $mult2*$v01+$mult3*$v11;
$v22 = $mult2*$v02+$mult3*$v12;
$v23 = $mult2*$v03+$mult3*$v13+$d3;

$vec=Matrix->new_from_array_ref( [[$v01, $v11, $v21],[$v02, $v12, $v22],[$v03, $v13, $v23]]);

$b1 = random(-6,6,2);
$b2 = random(-5,5,1);
$b3 = random(-5,5,1);

$vecb = Matrix->new_column_matrix([$b1, $b2, $b3]);

$ans1 = 3;
$ans2 = -1;

$sl = new_pop_up_select_list();
$sl->qa(
"Determine if \(b\) is in \( \left\{ a_{1},a_{2},a_{3} \right\} \)", 'No', "Determine if \(b\) is in \(W\)", 'Yes',
);
$sl->choose(2);
$sl->ra_pop_up_list(['no_answer' => 'Select Answer', 'Yes' => 'Yes', 'No'
=> 'No']);

BEGIN_TEXT

\{ mbox( 'Let \( A = \)', display_matrix($vec), ' and \( b = \)', display_matrix($vecb), '.' ) \}
$BR
Denote the columns of \( A \) by \(a_{1}\), \(a_{2}\), \(a_{3}\), and let \(  W= span\left\{"\{"\} a_{1},a_{2},a_{3}\right\} \).
\{$sl->print_q()\}
$BR
How many vectors are in \( \left\{"\{"\} a_{1},a_{2},a_{3}\right\} \)? (For infinitely many, enter -1)
\{ans_rule(10)\}
$BR
How many vectors are in \( W \)? (For infinitely many, enter -1)
\{ans_rule(10)\}
$BR


END_TEXT
ANS str_cmp($sl->ra_correct_ans);
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

ENDDOCUMENT() ;
