$x2=non_zero_random(-2,2,1);
$x3=non_zero_random(-2,2,1);
foreach $i (1..4) { 
        $v[$i] = $x1*$a[$i]+$x2*$b[$i]+$x3*$c[$i]
};
$a = (a);
$ans= $v[2];


$RIGHT_BRACE = '\}';

BEGIN_TEXT

$BR
Find the value of \( a \) for which 
$BR$BR
\(v= \{display_matrix_mm([[$v[1]], [$a], [$v[3]], [$v[4]]])\} \)
$BR $BR
is in the set
$BR $BR 
\( H= span\left\{'\{'\} \{display_matrix_mm([[$a[1]], [$a[2]], [$a[3]], [$a[4]]])\}, 
