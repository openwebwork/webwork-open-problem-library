DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
TEXT(beginproblem());    
# Do not show which answers are incorrect.
$showPartialCorrectAnswers = 0;

Context('Matrix');

$a11 = random(-1,1,2);
$a12 = non_zero_random(-3,3,1);
$mult = non_zero_random(-2,2,1);
$a21 = $mult * $a11;
$b1 = random(-1,1,2);
$a22 = $mult * $a12 + $b1;

$a = Matrix([
[$a11,$a21],
[$a12,$a22],
]);
#$a->assign(1,1, $a11 );
#$a->assign(1,2, $a21 );
#$a->assign(2,1, $a12 );
#$a->assign(2,2, $a22 );
#$a_lr = $a->decompose_LR();
$a_det = $a11 * $b1;

#$b = $a_lr->invert_LR();
$b = $a->inverse;

do {
$e1 = Compute(non_zero_random(-8,8,1));
$e2 = Compute(non_zero_random(-8,8,1));
} until ($e1 != $e2);
$e = Matrix([
[$e1,0],
[0,$e2],
]);

$ans1 = $e1;

$matrix = $a * $e *$b;

$v1 = $a->column(1);
$v2 = $a->column(2);

Context()->texStrings;
BEGIN_TEXT
Given that the matrix \(A\) has eigenvalues \( \lambda_1 = $e1\) with corresponding eigenvector \(\vec{v}_{1} = $v1\) 
and \( \lambda_2 = $e2\) with corresponding eigenvector \(\vec{v}_{2} = $v2\), find \(A\).
$BR
$BR
\(A=\) \{ $matrix->ans_array \}
END_TEXT

Context()->normalStrings;

# Enter the correct answers to be checked against the answers to the students.
ANS($matrix->cmp);

