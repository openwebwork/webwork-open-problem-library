DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Matrix");

# create an invertible matrix with det either 1  or -1

$a11 = random(-1,1,1);
$a21 = random(-1,1,2);
$a31 = random(-1,1,2);

$b1 = random(-1,1,2);
$a12 = $b1 * $a11;
$m = random(-1,1,2);
$a22 = $b1 * $a21 + $m;
$a32 = $b1 * $a31;

$c = random(-1,1,1);
$d = random(-1,1,2);
$n = random(-1,1,2);
$a13 = $c * $a11 + $d * $a12 + $n;
$a23 = $c * $a21 + $d * $a22;
$a33 = $c * $a31 + $d * $a32;

$a = Matrix([[$a11, $a12, $a13],[$a21, $a22, $a23],[$a31, $a32, $a33]]);

$b = $a->inverse();


# define eigenvalues

    $e1 =  Real(random(-5,-2,1));
    $e2 = Real(random(-1,1,2));
    $e3 = Real(random(2,5,1));

$e = Matrix([[$e1,0,0],[0,$e2,0],[0,0,$e3]]);

$matrix = $a*$e*$b;

# define eigenvectors

$v1 = Matrix([[$a11],[$a21],[$a31]]);
$v2 = Matrix([[$a12],[$a22],[$a32]]);
$v3 = Matrix([[$a13],[$a23],[$a33]]);

Context()->texStrings;
BEGIN_TEXT
Find the eigenvalues of \(A\), given that \( A = $matrix \) 
$PAR
and its eigenvectors are \( v_1 = $v1, v_2 = $v2\) and \(v_3 = $v3\).
$PAR
The corresponding eigenvalues are \(\lambda_1 = \)\{ans_rule(10)\}, 
\(\lambda_2 = \)\{ans_rule(10)\}, and \(\lambda_2 = \)\{ans_rule(10)\}.
END_TEXT
Context()->normalStrings;

ANS($e1->cmp());
ANS($e2->cmp());
ANS($e3->cmp());

ENDDOCUMENT() ;


