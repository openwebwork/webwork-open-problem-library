$e->assign(1,1, $eig1);
$eig3 = - $eig1;
$e->assign(3,3, $eig3);
$eig4 = - $eig2;
$e->assign(4,4, $eig4);
$ans1 = $eig2;
$matrix = $A * $e *$b;
$matrix_lr = $matrix->decompose_LR();
$matrix_det = $matrix_lr->det_LR(); 
foreach $i (1..4) { 
	foreach $j (1..4) { 
		$m[$i][$j] = $matrix->element($i,$j);
		$m[$i][$j] = round($m[$i][$j]);
		$matrix -> assign($i,$j,$m[$i][$j]);  
  	}
}

