DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
$a=random(-4, 4, 1);
$b=non_zero_random(-7, 7, 1);
$c=non_zero_random(-7, 7, 1);
$d=random(-6, 6, 1);
$e=non_zero_random(-5,-2,1);
$f=$a*$e;
$g=$b*$e;
$h=$c*$e;
$i=$d*$e;
$f2=$f;
$g2=$g+$h;
$h2=$h-$g;
$i2=$i;


$set1="\(S= \left\{ \begin{pmatrix}
$a&$b\cr
$c&$d
\end{pmatrix},\, \begin{pmatrix}
$f&$g\cr
$h&$i
\end{pmatrix} \right\} \)";
$ans1="Linearly_Dependent";

$set2="\(S= \left\{ \begin{pmatrix}
$a&$b\cr
$c&$d
\end{pmatrix},\, \begin{pmatrix}
$f2&$g2\cr
$h2&$i2
\end{pmatrix} \right\} \)";
$ans2="Linearly_Independent";


$set3="\(S= \left\{ \begin{pmatrix}
$a&$b\cr
$c&$d
\end{pmatrix},
\,
 \begin{pmatrix}
$f2&$g2\cr
$h2&$i2
\end{pmatrix} 
,\, 
 \begin{pmatrix}
1&-3\cr
9&10
\end{pmatrix} 
,\,\right. \)
\(\left.  
 \begin{pmatrix}
$b&$a\cr
$g&$e
\end{pmatrix}
,\,
 \begin{pmatrix}
17&-31\cr
\pi & e^2
\end{pmatrix}  
\right\} 
\)";
$ans3="Linearly_Dependent";


$a=random(-1,1,1);
$b=non_zero_random(-2,2,1);
$c=non_zero_random(-2,2,1);
$d=random(-1,1,1);
$a2=1+2*$a;
$b2=2*$b;
$c2=2*$c;
$d2=1+2*$d;


$set4="\(S= \left\{ \begin{pmatrix}
$a2&$b2\cr
$c2&$d2
\end{pmatrix},\, \begin{pmatrix}
$b2&$a2\cr
$a2&$c2
\end{pmatrix},\,
\begin{pmatrix}
$b2&$c2\cr
$a2&0
\end{pmatrix}
 \right\} \)";
$ans4="Linearly_Independent";


# Make a new checkbox multiple choice
$tf = new_pop_up_select_list();
$tf->ra_pop_up_list(["No_Answer_Entered"=>"Select an Answer", "Linearly_Independent" => "Linearly Independent", "Linearly_Dependent" => "Linearly Dependent"]);
# $cmc now "contains" the checkbox multiple choice object.

# Insert some  questions and matching answers in the q/a list
$tf -> qa (  
$set1, $ans1, $set2, $ans2,  $set3, $ans3,  $set4, $ans4                 
);

$tf->choose(4);

# Insert some incorrect answers

# Print the text using $mc->print_q for the questions and
# $mc->print_a to print the answers.
BEGIN_TEXT

Determine whether or not the following sets \(S\) of \(2\times 2\) matrices are linearly independent. 

$BR

 \{ $tf -> print_q \}

END_TEXT

