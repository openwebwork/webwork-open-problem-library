DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a11 = random(-5,5,1);
$a12 = random(-5,5,1);
$a13 = random(-5,5,1);
$a21 = random(-5,5,1);
$a22 = random(-5,5,1);
$a23 = random(-5,5,1);
$a31 = random(-5,5,1);
$a32 = random(-5,5,1);
$a33 = random(-5,5,1);

$det = $a11*($a22*$a33-$a32*$a23)-$a12*($a21*$a33-$a23*$a31)+$a13*($a21*$a32-$a22*$a31);

if($det==0){
   $ans="yes";}
else{
   $ans="no";}

BEGIN_TEXT

Use determinants to determine if the matrix below is singular.
$BR
\{ mbox( '\(A=\)', display_matrix([[$a11, $a12, $a13], [$a21, $a22, $a23], [$a31, $a32, $a33]]) ) \}
$BR
\{ mbox( '\(\det\,(A)= \ \)', ans_rule(10) ) \}
$BR
\{ mbox( 'Is \(A\) singular? Type "yes" or "no":', ans_rule(20) ) \}

END_TEXT

ANS(num_cmp($det));
ANS(str_cmp($ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.
