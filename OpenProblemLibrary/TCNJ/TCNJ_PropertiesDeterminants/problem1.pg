DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$det1 = non_zero_random(-5,5,1);

$k = random(2,9,1)*random(-1,1,2);
$j = random(2,9,1)*random(-1,1,2);

$ans1 = $det1*$k;
$ans2 = $det1*$j;
$ans3 = - $det1;

$str1 = $str1 . "$k";
$str1 = $str1 . "g";
$str2 = $str2 . "$k";
$str2 = $str2 . "h";
$str3 = $str3 . "$k";
$str3 = $str3 . "i";

$str4 = $str4 . "$j";
$str4 = $str4 . "d";
$str5 = $str5 . "$j";
$str5 = $str5 . "e";
$str6 = $str6 . "$j";
$str6 = $str6 . "f";

BEGIN_TEXT

\{ mbox('Given \( \ \det \)', display_matrix([['a', 'b', 'c'], ['d', 'e', 'f'], ['g', 'h', 'i']]), '\(=$det1 \), find the following determinants.' ) \}
$BR
\{ mbox('\( \ \det \)', display_matrix([['a', 'b', 'c'], ['d', 'e', 'f'], ['$str1', '$str2', '$str3']]), '\(= \ \)', ans_rule(5)) \}
$BR
\{ mbox('\( \ \det \)', display_matrix([['a', 'b', 'c'], ['$str4', '$str5', '$str6'], ['g', 'h', 'i']]), '\(= \ \)', ans_rule(5)) \}
$BR
\{ mbox('\( \ \det \)', display_matrix([['a', 'b', 'c'], ['g', 'h', 'i'], ['d', 'e', 'f']]), '\(= \ \)', ans_rule(5)) \}

END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));

ENDDOCUMENT();       # This should be the last executable line in the problem.
