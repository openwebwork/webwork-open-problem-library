);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

#Context('Fraction');
Context('Matrix');
Context()->parens->set("[" => {formMatrix => 1});

do {

do {

$A = Matrix([
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
]);

$C = Matrix([
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
]);

$CMA = $C - $A;

} until ($CMA->det != 0);

#$A = apply_fraction_to_matrix_entries($A);
#$C = apply_fraction_to_matrix_entries($C);
#$CMA = apply_fraction_to_matrix_entries($CMA);

$a = $CMA->element(1,1);
$b = $CMA->element(1,2);
$c = $CMA->element(2,1);
$d = $CMA->element(2,2);

$det = $a * $d - $b * $c;

$CMAinv = Matrix([
[$d / $det, - $b / $det],
[- $c / $det, $a / $det],
]);

$CMAinvdet = Matrix([
[$d, - $b],
[- $c, $a],
]);

$B = Matrix([
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
]);

#$B = apply_fraction_to_matrix_entries($B);

$CMAinvdetB = $CMAinvdet * $B; 

$X = Compute("1/$det * $CMAinvdetB");

$Y = $B * $CMAinv; # common incorrect answer

} until ($X != $Y);

Context()->texStrings;
BEGIN_TEXT
Solve for \(X\). 
$BR
$BR
\[ $A X + $B = $C X. \]
$BR
\(X=\) \{ $X->ans_array(15) \}
END_TEXT
Context()->normalStrings;

ANS($X->cmp);

Context()->texStrings;
BEGIN_SOLUTION
Write \( A = $A \), \( B = $B \), and \( C = $C \).  Provided that \( C - A \) is invertible, 
\[
\begin{array}{rcl}
AX + B  & = & CX \\
B & = & CX - AX \\
B & = & (C-A)X \\
(C-A)^{-1} B & = & (C-A)^{-1} (C-A) X \\
(C-A)^{-1} B & = & I X \\
(C-A)^{-1} B & = & X
\end{array}
\]
and therefore
\[
\begin{array}{rcl}
X & = & \left( $C - $A \right)^{-1} $B\\
& = & $CMA^{-1} $B \\
& = & \frac{1}{$det} $CMAinvdet $B \\
& = & \frac{1}{$det} $CMAinvdetB \\
& \approx & $X.
\end{array}
\]
END_SOLUTION
Context()->normalStrings;
COMMENT('Requires an inverse matrix.');
