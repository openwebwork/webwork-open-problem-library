do {

$A = Matrix([
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
]);

} until ($A->det != 0);

#$A = apply_fraction_to_matrix_entries($A);

$a = $A->element(1,1);
$b = $A->element(1,2);
$c = $A->element(2,1);
$d = $A->element(2,2);

$det = $a * $d - $b * $c;

$Ainv = Matrix([
[$d / $det, - $b / $det],
[- $c / $det, $a / $det],
]);

$Ainvdet = Matrix([
[$d, - $b],
[- $c, $a],
]);

$B = Matrix([
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
]);

$C = Matrix([
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
]);

$num = random(2,5,1)*random(-1,1,2);
$m = random(2,5,1)*random(-1,1,2);

#$B = apply_fraction_to_matrix_entries($B);
#$C = apply_fraction_to_matrix_entries($C);

$CMB = $C - $B;

$X1 = ($Ainvdet) * ($C - $B);

#$X = ($Ainv) * ($C - $B);
$X = Compute("1/$det $X1");

$Y = ($C - $B) * ($Ainv); # common incorrect answer

} until ($X != $Y);

Context()->texStrings;
BEGIN_TEXT
Solve for \(X\). 
$BR
$BR
\[ $A X + $B = $C. \]
$BR
\(X=\) \{ $X->ans_array(15) \}
END_TEXT
Context()->normalStrings;

ANS($X->cmp);

Context()->texStrings;
BEGIN_SOLUTION
Write \( A = $A \), \( B = $B \), and \( C = $C \).  Provided \( A \) is invertible,
\[
\begin{array}{rcl}
A X + B & = & C \\
A X & = & C - B \\
X & = & A^{-1} (C-B).
\end{array}
\]
Thus,
\[
\begin{array}{rcl}
X & = & $A^{-1} \left( $C - $B \right) \\
& = & $A^{-1} $CMB \\
& = & \frac{1}{$det} $Ainvdet $CMB \\
& = & \frac{1}{$det} $X1 \\
& \approx & $X.
\end{array}
\]
END_SOLUTION
Context()->normalStrings;

COMMENT('Requires an inverse matrix.');
