DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

Context('Matrix');

$a1 = non_zero_random(-5,5,1);
$a2 = non_zero_random(-5,5,1);
$a3 = non_zero_random(-5,5,1);
$a4 = non_zero_random(-5,5,1);
$a5 = non_zero_random(-5,5,1);

$b1 = non_zero_random(-5,5,1);
$b2 = non_zero_random(-5,5,1);
$b3 = non_zero_random(-5,5,1);
$b4 = $a4*2;
$b5 = $a5*2+1;

$c1 = 2*$a1 - $b1;
$c2 = 2*$a2 - $b2;
$c3 = 2*$a3 - $b3;
$c4 = 2*$a4 - $b4;
$c5 = 2*$a5 - $b5;

$m = Matrix([
[$a1,$b1,$c1],
[$a2,$b2,$c2],
[$a3,$b3,$c3],
[$a4,$b4,$c4],
[$a5,$b5,$c5],
]);


$basis1 = $m->column(1);
$basis2 = $m->column(2);

$multians = MultiAnswer($basis1, $basis2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT
Let \[ A = $m. \]
Find a basis for the column space of \(A\).
$BR
$BCENTER
\(\Bigg\lbrace\)
\{ $multians->ans_array \}, 
\{ $multians->ans_array \} 
\(\Bigg\rbrace.\)
$ECENTER
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;
ENDDOCUMENT();