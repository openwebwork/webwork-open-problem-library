DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

Context('Matrix');

$a1 = non_zero_random(-5,5,1);
$a2 = non_zero_random(-5,5,1);
$a3 = non_zero_random(-5,5,1);
$a4 = non_zero_random(-5,5,1);
$a5 = non_zero_random(-5,5,1);

$b1 = non_zero_random(-5,5,1);
$b2 = non_zero_random(-5,5,1);
$b3 = non_zero_random(-5,5,1);
$b4 = $a4*2;
$b5 = $a5*2+1;

$c1 = 2*$a1 - $b1;
$c2 = 2*$a2 - $b2;
$c3 = 2*$a3 - $b3;
$c4 = 2*$a4 - $b4;
$c5 = 2*$a5 - $b5;

$m = Matrix([
[$a1,$a2,$a3,$a4,$a5],
[$b1,$b2,$b3,$b4,$b5],
[$c1,$c2,$c3,$c4,$c5],
]);

$basis1 = $m->row(1);
$basis2 = $m->row(2);

$multians = MultiAnswer($basis1, $basis2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_rows,
);

Context()->texStrings;
BEGIN_TEXT
Let \[ A = $m. \]
Find a basis for the row space of \(A\).
$BR
$BCENTER
\(\big\lbrace\)
\{ $multians->ans_array \}, $BR
\{ $multians->ans_array \} 
\(\big\rbrace.\)
$ECENTER
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;
ENDDOCUMENT();
