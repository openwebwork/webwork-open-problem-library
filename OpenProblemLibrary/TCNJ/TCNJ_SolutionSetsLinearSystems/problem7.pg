DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = non_zero_random(-5,5,1);
$b = non_zero_random(-5,5,1);
$c = non_zero_random(-5,5,1);
$d = non_zero_random(-5,5,1);
$e = non_zero_random(-5,5,1);
$f = non_zero_random(-5,5,1);
$g = non_zero_random(-5,5,1);
$h = non_zero_random(-5,5,1);

$A = Matrix( [[1, $a, $b, $c, $d, $e],
				  [0, 0, 1, $f, 0, $g],
				  [0, 0, 0, 0, 1, $h],
				  [0, 0, 0, 0, 0, 0]]);

$ans1 = -$a;
$ans2 = -$c+$b*$f;
$ans3 = -$f;
$ans4 = -$e+$d*$h+$b*$g;
$ans5 = -$g;
$ans6 = -$h;

$basis1 = Matrix([$ans1, 1, 0, 0, 0, 0])->transpose;
$basis2 = Matrix([$ans2, 0, $ans3, 1, 0, 0])->transpose;
$basis3 = Matrix([$ans4, 0, $ans5, 0, $ans6, 1])->transpose;

$multians = MultiAnswer($basis1, $basis2, $basis3)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT
Let \[ A = $A. \]
Describe all solutions of \( A\vec{x} = \vec{0} \).
$BR
$BR
\( \vec{x} = x_2 \)
\{ $multians->ans_array \}
\( + x_4 \)
\{ $multians->ans_array \}
\( + x_6 \)
\{ $multians->ans_array \}.
END_TEXT
Context()->normalStrings;

ANS( $multians->cmp() );
COMMENT('MathObject version');
ENDDOCUMENT() ;
