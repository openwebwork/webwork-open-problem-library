DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(-5,5,1);
$b = random(-5,5,1);
$c = non_zero_random(-5,5,1);
$mult = random(2,4,1);
$d = $a*$mult;
$e = $b*$mult;
$f = $c*$mult;

$basis1 = Matrix([- $a, 1, 0, 0])->transpose;
$basis2 = Matrix([- $b, 0, 1, 0])->transpose;
$basis3 = Matrix([- $c, 0, 0, 1])->transpose;

$A = Matrix( [[1, $a, $b, $c],[$mult, $d, $e, $f]]);

$multians = MultiAnswer($basis1, $basis2, $basis3)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT
Let \[ A = $A. \]
Describe all solutions of \( A\vec{x} = \vec{0} \).
$BR
$BR
\( \vec{x} = x_2 \)
\{ $multians->ans_array \}
\( + x_3 \)
\{ $multians->ans_array \}
\( + x_4 \)
\{ $multians->ans_array \}.
END_TEXT
Context()->normalStrings;

ANS( $multians->cmp() );
COMMENT('MathObject version');
ENDDOCUMENT() ;
