DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

do {
@p = (non_zero_random(-6,6,1),non_zero_random(-6,6,1));
@v = (non_zero_random(-5,5,1),non_zero_random(-5,5,1));
} until ($p[0] * $v[1] != $p[1] * $v[0]);

$V = Matrix([$v[0],$v[1]])->transpose;

$displace = Matrix([$p[0],$p[1]])->transpose;
$basis1 = Matrix([$v[0],$v[1]])->transpose;

$multians = MultiAnswer($displace, $basis1)->with(
  singleResult => 1,
  separator => ', ',
  tex_separator => ', ',
  allowBlankAnswers=>0,
  checker => ~~&parametric_plane_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT
Find the vector equation of a line \(L\) going through 
the point \(P= ($p[0],$p[1]) \) and parallel to the line 
generated by multiples of the vector \(v=$V\). 
$BR
$BR
\( L(t) = \)
\{ $multians->ans_array \}
\( + t \)
\{ $multians->ans_array \}.
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;
ENDDOCUMENT();
