DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Note:  Values are chosen to increase the odds
#         against a conditional equation.

$a = random(2,4,1);
$c = random(6,9,1);
$d = non_zero_random(-3,3,1);  
$b = list_random($c*$d,list_random(1,2,3,4,5));
$e = list_random($c-$a,list_random(-5,-4,-3,-2, 2,4,5,6)) ;

######################################
#  Main text

BEGIN_TEXT
Solve the equation for \( x \) and select the answer which best
describes the equation.  (Enter the numerical answer or
$BITALIC All real numbers $EITALIC or $BITALIC No solution $EITALIC.)
  \[$a x + $b = $c(x ? {$d}) ? {$e} x\]
$PAR
\( x = \) \{ans_rule(20) \} : \{ pop_up_list(''=>'?','conditional'=>'conditional','identity'=>'identity','inconsistent'=>'inconsistent') \}
$BR
END_TEXT

######################################
#  Answers
#
#  NOTES:  The correct answer is formatted to be a fraction in 
#          reduced form.

Context("LimitedNumeric-StrictFraction"); 
Context()->strings->add("No solution"=>{"DNE"}, 
                        "All real numbers"=>{"R"}, 
                        "conditional"=>{}, 
                        "inconsistent"=>{}, 
                        "identity"=>{});

if ($a!=($c+$e)) {
   ($num,$den)= reduce($c*$d-$b, $a - $c - $e);
    $ans_a = Compute("$num/$den");
    if ($den==1) {$ans_a = Compute("$num");}
    $ans_b = String("conditional"); 
} elsif ($b!=$c*$d) {
    $ans_a = String("No solution"); 
    $ans_b = String("inconsistent"); 
} else {
    $ans_a = String("All real numbers"); 
    $ans_b = String("identity"); 
}

ANS($ans_a->cmp);
ANS($ans_b->cmp);

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
