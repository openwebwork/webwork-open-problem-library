DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGauxiliaryFunctions.pl",
  "Parser.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Note: Values are chosen to have a solution.

$b = random(5,7,1);
$a = $b - random(1,3,1);
$c = non_zero_random(-3,3,1);
$d = non_zero_random(-3,3,1);
$e = $b - random(2,3,1);
$f = $b - $e;
if ($a*$f*$e - $b*$e-$b*$f==0) {$a = $a-1;}

######################################
#  Main text

BEGIN_TEXT
Solve the equation for \( x \):
\[\frac{$a x}{$b} - \frac{x ? {$c}}{$f} = \frac{x ? {$d}}{$e}\]
$PAR
\( x = \) \{ans_rule(10) \}
$BR
END_TEXT

######################################
#  Answers
#
#  NOTES:  The correct answer is formatted to be a fraction in 
#          reduced form.

Context("LimitedNumeric-StrictFraction"); 

($ans_n,$ans_d)= reduce($b*$d*$f+$b*$c*$e, $a*$f*$e - $b*$e-$b*$f);
$ans = "$ans_n/$ans_d";
if ($ans_d==1) {$ans = "$ans_n";}
ANS(Compute($ans)->cmp);

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
