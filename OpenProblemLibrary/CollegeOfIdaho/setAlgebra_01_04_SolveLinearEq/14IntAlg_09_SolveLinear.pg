DOCUMENT(); # This should be the first executable line in the problem.

loadMacros('PGstandard.pl', 'PGML.pl', 'contextFraction.pl', 'PGcourse.pl');

Context('Fraction');

$c = random(2,5);
$b = random(1,5);
do {$a = random(2,4);} while (2*$c-$a==0);
$d = random(1,4);

$x = Fraction($c*$d + $a*$b, 2*$c - $a);

BEGIN_PGML
Solve the equation for [` x `]:
[```[$a] (x + [$b]) = [$c] [x - ([$d] - x)] ```]

[` x = `] [_]{$x}
  
END_PGML

$ab = $a * $b; 
$c2 = 2*$c; 
$cd = $c * $d; 
$ac2 = $a - $c2; 
$abcd = -$ab -$cd; 
BEGIN_PGML_SOLUTION
[```
\begin{aligned}
[$a] (x + [$b]) & = [$c] [x - ([$d] - x)] \qquad \text{expand left side and within [ ]} \\
[$a] x + [$ab] & =  [$c] [ x - [$d] + x] \quad \text{simplify inside [ ]} \\
[$a] x + [$ab] & = [$c] [2x - [$d] ] \quad \text{expand/distribute}\\
[$a] x + [$ab] & = [$c2] x - [$cd] \\
[$ac2] x & = [$abcd]  \\
x & = \frac{[$abcd]}{[$ac2]} = [$x]
\end{aligned}
```]
END_PGML_SOLUTION

#  Answers

Context("LimitedNumeric-StrictFraction"); 

($num,$den)= reduce($c*$d + $a*$b, 2*$c - $a);
$ans = Compute("$num/$den");
if ($den==1) {$ans = Compute("$num");}
# ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

;
ENDDOCUMENT();