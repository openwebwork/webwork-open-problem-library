DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGauxiliaryFunctions.pl",
  "Parser.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a = random(2,4,1);
$b = $a + random(1,3,2);
$c = $a + random(1,3,1);
$d = $c + 1;
if($a*$d - $b*$c == 0){$d = $c - 1;}
$n = random(1,3,1);
$e = $n*($a*$d - $b*$c);

######################################
#  Main text

BEGIN_TEXT
Solve the equation for \( x \):
\[\frac{$a x}{$b} = \frac{$c x}{$d} + $e\]
$PAR
\( x = \) \{ans_rule(10) \}
$BR
END_TEXT

######################################
#  Answers

Context("LimitedNumeric-StrictFraction"); 

$ans = Real($b*$d*$n);
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
