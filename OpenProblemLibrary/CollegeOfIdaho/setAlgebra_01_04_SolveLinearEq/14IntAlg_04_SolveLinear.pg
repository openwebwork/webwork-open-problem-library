DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a = random(3,14,1);
$b = random(2,7,1);
if ($a==$b) {$b=$a-1;}
$c = random(1,6,1);
$n = random(1,21,1);
$d = ($a-$b)*$n + $c;

######################################
#  Main text

BEGIN_TEXT
Solve the equation for \( x \):
\[$a x - ($b x -$c) = $d\]
$PAR
\( x = \) \{ans_rule(10) \}
$BR
END_TEXT

######################################
#  Answers

Context("LimitedNumeric-StrictFraction"); 

$ans = Real($n);
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
