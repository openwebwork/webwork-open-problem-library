DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "PGgraphmacros.pl",
  "PGnauGraphics.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem());

######################################
#  Setup

do {
   $a = random(-5,5,1);   
   $b = random(-5,5,1);         
   $f = Formula("x^2-($a+$b)x+($a*$b)")->reduce;   #f(x)=(x-a)(x-b)
   } until (abs($f->eval(x=>($a+$b)/2))<10);

$display_f = $f->TeX;
$x = random(-4,4,1);

#----------Define the graph-----------

$xmax = 8;
$ymax = 8;
$xmin = -8;
$ymin = -8;

@slice = NchooseK(3,3);
@colors = ("blue", "red", "green");
@sc = @colors[@slice]; #scrambled colors

#----Build the graph
$graph = init_graph_no_labels($xmin,$ymin,$xmax,$ymax,
                              'axes'=>[0,0],'grid'=>[$xmax-$xmin,$ymax-$ymin]);
$f_graph = FEQ("$f for x in [$xmin,$xmax] using color=$sc[0] and weight=3");

add_functions( $graph,$f_graph);

$i = 0;           # Number the axes
do {
  $xtick = $i + $xmin + 1;
  $labelx[$i] = new Label($xtick,0, "$xtick",'black','center');
  if ($xtick!=0) {$graph->lb($labelx[$i]);}
  $i =$i+1;
} while ($i<($xmax-$xmin)-1);

$i = 0;
do {
  $ytick = $i +$ymin + 1;
  $labely[$i] = new Label(-.2,$ytick+.1, "$ytick",'black','center');
  if ($ytick!=0) {$graph->lb($labely[$i]);} 
  $i =$i+1;
} while ($i<($ymax-$ymin)-1);
 
######################################
#  Main text
#  Note:  tex_size=>n is for the size on the hardcopy: 600=60%

BEGIN_TEXT
\{ Plot($graph,tex_size=>600) \} 
$BR $BR
The graph of \(f(x) = $display_f\) is shown above. 
$PAR
a) Determine the \(x\)-intercepts of the graph.  (Note: List the value(s)
of \(x\) separated by a comma.)
$BR
\(x =\)  \{ ans_rule(20) \} 
$PAR
b)  Find the solution(s) for: \($display_f = 0\)
$BR
Answer:  \{ ans_rule(20) \} 
END_TEXT

######################################
#  Answer

$ans_a = List($a,$b);
if ($a==$b) {$ans_a = List($a);}
ANS($ans_a->cmp);

Context("Inequalities-AllowStrings");
$ans_b = Compute("x=$a or x=$b");
ANS($ans_b->cmp); 

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
