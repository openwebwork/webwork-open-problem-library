DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Form: (ax-b)^2=0

$a = random(2,4,2);  
$b = random(1,5,2);
$Two_ab = 2*$a*$b;  
$aa = $a*$a;
$bb = -1*$b*$b;

$polynomial = Formula("$Two_ab x + $bb")->reduce->TeX;

######################################
#  Main text

BEGIN_TEXT
Use factoring to solve the polynomial equation:
 \[  $aa x^2 = $polynomial \]
Answer:  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");

($num,$den)=reduce($b,$a);
$v = "$num/$den";
if ($den==1) {$v="$num";}
$ans = Compute("x = $v");
ANS($ans->cmp); 

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
