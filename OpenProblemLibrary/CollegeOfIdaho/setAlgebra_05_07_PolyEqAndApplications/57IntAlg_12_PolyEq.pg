DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Form: (ax+b)(ax-b)=0


$a = random(3,5,2);  

$b = list_random(2,4,8);
$aa = $a*$a;
$bb = $b*$b;

######################################
#  Main text

BEGIN_TEXT
Use factoring to solve the polynomial equation:
 \[  $aa x^2 = $bb \]
Answer:  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");


($num,$den) = reduce($b,$a);
$v = "$num/$den";
if ($den==1) {$v = "$num";}
$ans = Compute("x = -$v or x = $v")->reduce;
ANS($ans->cmp); 

$showPartialCorrectAnswers = 1;

######################################



;
ENDDOCUMENT();

