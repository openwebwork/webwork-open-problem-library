DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Form: (ax-b)(x-c)=0 => x((a+n)x+m)=nx^2+dx-bc

$a = random(1,4,1);
$b = random(1,4,1);
$c = random(2,3,1);  #Don't want this to factor to a square
if ($c==($b/$a)) {$c = 5;}
$d = random(1,4,1);

$n = random(2,4,1);
$m = $d - $a*$c-$b;
$bc = -1*$b*$c;
$aPlusn = $a + $n;

$poly1 = Formula("$aPlusn x + $m")->reduce->TeX;
$poly2 = Formula("$n x^2+ $d x + $bc")->reduce->TeX;
 
######################################
#  Main text

BEGIN_TEXT
Use factoring to solve the polynomial equation:
 \[  x($poly1) = $poly2 \]
Answer:  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");


$ans = Compute("x = $b/$a or x=$c");
ANS($ans->cmp); 

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
