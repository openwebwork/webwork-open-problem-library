DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#This is an (a,b] problem:

$a = random(-4,4,1);
$b = random(5,9,1);
$c = random(1,5,1);
$n = random(3,4,1);
$m = random(-4,-3,1);
$d = 1-$m;
$e = $m*$a - $c;
$f = $n-1;
$g = $n*$b-$c;

@inequal = ("x - $c < $e + $d x","$f x - $c \leq $g - x" );
@slice = NchooseK(2,2);
 
######################################
#  Main text

BEGIN_TEXT
Solve the compound inequality. 
\[ $inequal[$slice[0]] \mbox{ and } $inequal[$slice[1]] \]
Answer:  \{ ans_rule(20) \}
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");

$ans = Compute("$a<x<=$b");
ANS($ans->cmp);		

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
