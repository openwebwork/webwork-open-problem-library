DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@slice = NchooseK(12,9);
@A = ($slice[1], $slice[2], $slice[3], $slice[4], $slice[5]);
@B = ($slice[1], $slice[2], $slice[3], $slice[6]);
@AiB = ($slice[1], $slice[2], $slice[3]);
@AuB = ($slice[1], $slice[2], $slice[3], $slice[4], $slice[5], $slice[6]);

for ($k=4; $k>0; $k-=1) {
  for ($i=0; $i<$k; $i+=1){
    if($A[$i]>$A[$k]) {
       $b = $A[$i];
       $A[$i] = $A[$k];
       $A[$k] = $b;
    }
  }
}

for ($k=3; $k>0; $k-=1) {
  for ($i=0; $i<$k; $i+=1){
    if($B[$i]>$B[$k]) {
       $b = $B[$i];
       $B[$i] = $B[$k];
       $B[$k] = $b;
    }
  }
}


for ($k=2; $k>0; $k-=1) {
  for ($i=0; $i<$k; $i+=1){
    if($AiB[$i]>$AiB[$k]) {
       $b = $AiB[$i];
       $AiB[$i] = $AiB[$k];
       $AiB[$k] = $b;
    }
  }
}

for ($k=5; $k>0; $k-=1) {
  for ($i=0; $i<$k; $i+=1){
    if($AuB[$i]>$AuB[$k]) {
       $b = $AuB[$i];
       $AuB[$i] = $AuB[$k];
       $AuB[$k] = $b;
    }
  }
}

$LEFT_BRACE = '\{';
$RIGHT_BRACE = '\}';
 
######################################
#  Main text

BEGIN_TEXT
Let \( A= ${LEFT_BRACE} $A[0],  $A[1], $A[2], $A[3],  $A[4] ${RIGHT_BRACE}\) , $SPACE
\( B= ${LEFT_BRACE} $B[0],  $B[1],  $B[2],  $B[3]  ${RIGHT_BRACE}\). 
$BR
Find the following sets in list form. Separate elements with commas.  If there are no elements in the set, enter "NONE".
$PAR
a) \( A \cap B = \) \{ans_rule(25)\} 
$PAR
b) \( A \cup B = \) \{ans_rule(25)\} 
END_TEXT

######################################
#  Answer

Context()->parens->replace('{' => {close => '}', type => 'Set'});

$ans_a = Set("{$AiB[0],$AiB[1],$AiB[2]}");
#Answer hints not working 
ANS($ans_a->cmp->withPostFilter(AnswerHints(
            sub {
                my ($correct,$student,$ans) = @_;
                return $student !~ /[}{]/;
                } => ["Enter your answer with set notation: { ... }", 
                      checkCorrect => 1, 
                      score => 0]
)));

$ans_b = Set("{$AuB[0],$AuB[1],$AuB[2],$AuB[3],$AuB[4],$AuB[5]}");
#Answer hints not working
ANS($ans_b->cmp->withPostFilter(AnswerHints(
            sub {
                my ($correct,$student,$ans) = @_;
                return $student !~ /[}{]/;
                } => ["Enter your answer with set notation: { ... }", 
                      checkCorrect => 1, 
                      score => 0]
)));

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
