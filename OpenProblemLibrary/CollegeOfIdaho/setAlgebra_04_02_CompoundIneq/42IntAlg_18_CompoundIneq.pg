DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
 "contextInequalitiesAllowStrings.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#This is an (a,b] problem:

$a = random(-4,4,1);
$b = $a + random(1,7,1);
$c = random(4,9,1);
$m = random(-3,-1,1);
$d = $c + $m * $a;
$e = $c + $m * $b;

$inequal = "$e < $c ? {$m} x < $d";
 
######################################
#  Main text

BEGIN_TEXT
Solve the compound inequality. 
\[ $inequal \]
Answer:  \{ ans_rule(20) \}
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");

$ans = Compute("$a<x<$b");
ANS($ans->cmp);	

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
