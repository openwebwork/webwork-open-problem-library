DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@slope = (2,1, 3,1, 4,1, 1,1, 1,2, 1,4, 3,4 ,3,2);
$n = random(0,14,2);
$dy = $slope[$n] * (-1) ** random(1,2,1);
$dx = $slope[$n + 1];
$f = "\frac{$dy}{$dx} x";
if ($dx==1) {$f = "$dy x"; if ($dy==1) {$f="x";}}
if ($dx*$dy==-1) {$f = "- x";}

#$f = Formula("$dy / $dx x")->reduce;
 
######################################
#  Main text

BEGIN_TEXT
For the line given by, \( y = $f \), find the slope of
a line that is:
$PAR
a)  Parallel to the given line: \( m_{parallel} =\)  \{ ans_rule(10) \} 
$PAR
b)  Perpendicular to the given line: \( m_{perpendicular} =\)  \{ ans_rule(10) \} 
END_TEXT

######################################
#  Answer

Context()->strings->add("Does not exist"=>{},
                        "Not defined"=>{alias=>'Does not exist'}
                       );

($n1,$d1)= reduce($dy,$dx);
$m = "$n1/$d1";
if ($d1==1) {$m = "$n1";}
$ans_a = Compute($m);
ANS($ans_a->cmp); 

$m_p = "-$d1/$n1";
if ($n1==1) {$m_p = "-$d1";}
if ($ans_a<0) 
  {$n1 = -1*$n1; 
   $m_p = "$d1/$n1";
   if ($n1==1) {$m_p = "$d1";}}

$ans_b = Compute($m_p);
ANS($ans_b->cmp); 

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();

