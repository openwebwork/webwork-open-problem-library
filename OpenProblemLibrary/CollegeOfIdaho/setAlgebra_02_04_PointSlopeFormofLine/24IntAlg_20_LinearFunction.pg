DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@slope = (2,1, 3,1, 4,1, 1,1, 1,2, 1,4, 3,4 ,3,2);
$n = random(0,14,2);
$dy = $slope[$n] * (-1) ** random(1,2,1);
$dx = $slope[$n + 1];
$f = "\frac{$dy}{$dx} x";
if ($dx==1) {$f = "$dy x"; if ($dy==1) {$f="x";}}
if ($dx*$dy==-1) {$f = "- x";}
 
######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
For the line given by, \( y = $f \), find the slope of
a line that is:
$PAR
a)  Parallel to the given line: \( m_{parallel} =\)  \{ ans_rule(10) \} 
$PAR
b)  Perpendicular to the given line: \( m_{perpendicular} =\)  \{ ans_rule(10) \} 
END_TEXT
Context()->normalStrings;

######################################
#  Answer

Context("Fraction");
Context()->strings->add("Does not exist"=>{},
                        "Not defined"=>{alias=>'Does not exist'}
                       );

$ans_a = Compute("$dy/$dx");
ANS($ans_a->cmp(
  tolType => 'absolute',
  tolerance => .0001,
)); 

$ans_b = -1/$ans_a; #Compute("-$dx/$dy");
ANS($ans_b->cmp(
  tolType => 'absolute',
  tolerance => .0001,
)); 

$showPartialCorrectAnswers = 1;

######################################
#  Solution

Context()->texStrings;
BEGIN_SOLUTION
$PAR Solution: $BR $BR
a) \( m_{parallel} = $ans_a\)
$BR
b) \( m_{perpendicular} = $ans_b\)
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();

