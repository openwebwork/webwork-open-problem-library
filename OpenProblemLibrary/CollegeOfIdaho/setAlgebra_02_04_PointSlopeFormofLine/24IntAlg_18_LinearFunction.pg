DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$m = random(2,5,1);
$f = Formula("$m x");
 
######################################
#  Main text

BEGIN_TEXT
For the line given by, \( y = \{$f->TeX\} \), find the slope of
a line that is:
$PAR
a)  Parallel to the given line: \( m_{parallel} =\)  \{ ans_rule(10) \} 
$PAR
b)  Perpendicular to the given line: \( m_{perpendicular} =\)  \{ ans_rule(10) \} 
END_TEXT

######################################
#  Answer

Context()->strings->add("Does not exist"=>{},
                        "Not defined"=>{alias=>'Does not exist'}
                       );

$ans_a = Compute($m);
ANS($ans_a->cmp); 

$ans_b = Compute("-1/$m");
ANS($ans_b->cmp); 

$showPartialCorrectAnswers = 1;

######################################
#  Solution

Context("Fraction");
$ans_a_display = Compute($m);
$ans_b_display = Compute("-1/$m");

Context()->texStrings;
BEGIN_SOLUTION
$PAR Solution: $BR $BR
a) \( m_{parallel} = $ans_a_display\)
$BR
b) \( m_{perpendicular} = $ans_b_display\)
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();

