DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$n = random(1,3,1);

$x1 = random(-2,2,1);  
$y1 = random(-4,4,2);
$x2 = $x1 + random(0,2,2);  #Increase the chance of a vertical line 
$y2 = random(-5,5,2);       #Note: y1 neq y2

######################################
#  Main text
 
BEGIN_TEXT
Find the slope, if possible, of the line passing through the points, \( ($x1, $y1) \) and \( ($x2, $y2) \) and describe the line.
$PAR
a)  \(m =\)  \{ ans_rule(15) \} 
$PAR
b) The line \{ pop_up_list(''=>'?',
                           'falls'=>'falls','rises'=>'rises',
                           'is horizontal'=>'is horizontal','is vertical'=>'is vertical') \}.
END_TEXT

######################################
#  Answer
#  NOTES:  The slope is formatted to be a fraction in 
#          reduced form.

Context("LimitedNumeric-Fraction"); 
Context()->strings->remove("DNE");
Context()->strings->add("Does not exist"=>{},
                        "DNE"=>{alias => "Does not exist"},
                        "Not defined"=>{alias=>'Does not exist'},
                        "rises"=>{},
                        "falls"=>{},
                        "is horizontal"=>{},
                        "is vertical"=>{}
                        );

$ans_b = String("rises");
if ($x2-$x1 != 0){
  ($num,$den)= reduce($y2 - $y1, $x2 - $x1);
   $ans_a = Compute("$num/$den");
   if ($den==1) {$ans_a = Compute("$num");}
   if ($ans_a<=0) {
      $ans_b = String("falls");
      if ($ans_a==0) {$ans_b = String("is horizontal");}
      } 
   }
else {
   $ans_a = String("Does not exist");
   $ans_b = String("is vertical");
   }

ANS($ans_a->cmp);
ANS($ans_b->cmp);

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
