##DESCRIPTION
## Slope and the y-intercept from an equation
## 
##ENDDESCRIPTION
## DBsubject(Algebra)
## DBchapter(Linear equations and functions)
## DBsection(Equations of lines: slope-intercept form)
## Institution(The College of Idaho)
## Author(RA Cruz)
## MLT(MLT08)
## Level(2)
## MO(1)
## TitleText1('Essentials of Intermediate Algebra')
## AuthorText1('Blitzer')
## EditionText1('1')
## Section1('2.3')
## Problem1('')
## KEYWORDS('slope', 'y-intercept')
## Date: 2007/10

DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@fraction = (1,2, -1,2, 3,2, -3,2, 2,3, -2,3, 2,5, -2,5, 4,5 ,-4,5, 5,2);
$n = random(0,20,2);

$num= $fraction[$n];
$den = $fraction[$n+1];

$b = non_zero_random(-3,3,1);

BEGIN_TEXT
Find the slope, \(m\), and \(y\)-intercept of the line \( y = \frac{$num}{$den} x ? {$b} \).
$PAR
a)  \(m\) =  \{ ans_rule(10) \} 
$PAR
b) The \(y\)-intercept is  \{ ans_rule(10) \}
END_TEXT

######################################
#  Answer
#  Note: Require an exact answer, no decimals

$showPartialCorrectAnswers = 1;

Context("LimitedNumeric-Fraction"); 
Context()->strings->add("Does not exist"=>{},
                        "Not defined"=>{alias=>'Does not exist'}
                       );

$ans_a = Compute("$num/$den");
ANS($ans_a->cmp); 

$ans_b = Compute("$b");
ANS($ans_b->cmp);

######################################
#  Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$BR
a)The slope is \(m = \frac{$num}{$den}\).
$BR
b) The \(y\)-intercept is \( $ans_b\).
END_SOLUTION

;
ENDDOCUMENT();
