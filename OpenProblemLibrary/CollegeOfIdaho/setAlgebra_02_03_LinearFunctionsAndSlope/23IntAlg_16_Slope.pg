DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserAssignment.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@fraction = (1,2, -1,2, 3,2, -3,2, 2,3, -2,3, 2,5, -2,5, 4,5 ,-4,5, 5,2);
$n = random(0,20,2);

$num= $fraction[$n];
$den = $fraction[$n+1];
$c = $den * random(-2,2,1);

Context()->variables->are(x=>'Real', y=>'Real');
$line = Formula("$num x + $den y")->reduce;

######################################
#  Main text

BEGIN_TEXT
Rewrite the equation in slope-intercept form by solving for \(y\). Find the
slope and the \(y\)-intercept. \[ \{$line->TeX\} = $c \]
$PAR
a)  The equation is: \{ ans_rule(20) \} 
$PAR
b) The slope is \(m =\) \{ ans_rule(5) \} 
$PAR
c) The \(y\)-intercept is \(b =\) \{ ans_rule(5) \} 
END_TEXT

######################################
#  Answer

Context('Numeric');
Context()->variables->are(x=>'Real', y=>'Real');
parser::Assignment->Allow;
Context()->strings->add("Does not exist"=>{}, 
                        "Not defined"=>{alias=>'Does not exist'});

sub errMsg {
  my $ans = shift; 
  $ans->{ans_message} =  "Enter your answer in the form: ".
                         "$BR ${BITALIC}y = mx+b, y = b${EITALIC} or ${BITALIC}x = c${EITALIC}"
    if $ans->{ans_message} =~ / left side of an assignment/;
  return $ans; 
}

$m = -1*$num / $den;
$b = $c / $den;
$ans_a = Formula("y=$m x + $b")->reduce; 
ANS($ans_a->cmp->withPostFilter(~~&errMsg));

$ans_b = Real($m);
ANS($ans_b->cmp); 

$ans_c = Real($b);
ANS($ans_c->cmp); 

$showPartialCorrectAnswers = 1;

######################################

;
ENDDOCUMENT();
