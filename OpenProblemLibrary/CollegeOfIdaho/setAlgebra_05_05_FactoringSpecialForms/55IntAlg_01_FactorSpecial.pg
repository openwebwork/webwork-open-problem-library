DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a= random(1,3,1);

$polynomial = Formula("x^2 - $a^2")->reduce->TeX;

######################################
#  Main text

BEGIN_TEXT
Factor the difference of squares: 
$PAR
\( $polynomial =  \) \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

$answer = "(x - $a)* (x + $a)";
ANS(FactoringEvaluator($answer,"x")); 

$showPartialCorrectAnswers = 1;

######################################


;
