DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGauxiliaryFunctions.pl",
  "Parser.pl",
  "MathObjects.pl",
#  "contextLimitedNumeric.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Note: Values are chosen to have a solution.

$b = random(5,7,1);
$a = $b - random(1,3,1);
$c = random(2,5,1);
$d = non_zero_random(-3,3,1);
do {$e = random(2,5,1);} while ($c==$e);
do {$f = random(1,7,1);} until (gcd($f,$c*$e)==1);
$ce = $c*$e;

######################################
#  Main text

BEGIN_TEXT
Solve the equation for \( x \):
\[\frac{$a x-$b}{$c} + \frac{x ? {$d}}{$e} = -\frac{$f}{$ce}\]
$PAR
\( x = \) \{ans_rule(10) \}
$BR
END_TEXT

######################################
#  Answers
#
#  NOTES:  The correct answer is formatted to be a fraction in 
#          reduced form.

$showPartialCorrectAnswers = 1;

($ans_n,$ans_d)= reduce($b*$e-$c*$d-$f, $a*$e +$c);
$ans = "$ans_n/$ans_d";
if ($ans_d==1) {$ans = "$ans_n";}
ANS(Compute($ans)->cmp);

######################################
#  Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\(x = $ans\)

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
