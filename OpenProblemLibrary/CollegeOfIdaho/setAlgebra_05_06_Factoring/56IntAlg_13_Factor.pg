DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl",
  "contextLimitedFactor.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@alphabet = ("a","b","c","x","y","z");
$n = random(0,3,3);
$var1= $alphabet[$n];
$var2= $alphabet[1+$n];
$var3= $alphabet[2+$n];
Context()->variables->are($var1=>'Real',$var2=>'Real',$var3=>'Real');

$a= random(2,5,1);
$e = random(2,4,1);

$polynomial = Formula("$var1^$e $var3 - $a $var2 $var3 - $var1^$e + $a $var2")->reduce->TeX;

######################################
#  Main text

BEGIN_TEXT
Factor completely: 
$PAR
\( $polynomial = \)  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

$answer = "($var1^$e - $a*$var2) * ($var3 - 1)";

Context("LimitedFactor");
Context()->variables->are($var1=>'Real', $var2=>'Real', $var3=>'Real');
$ans = Formula("$answer");
ANS($ans->cmp);
#ANS(FactoringEvaluator($answer,[$var1,$var2,$var3])); 

