DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl"
#####Doesn't do non-x variables with higher powers well
#  "contextPolynomialFactors.pl",  
#  "contextLimitedPowers.pl"
#####Put back when fixed
);

TEXT(beginproblem());

######################################
#  Setup

Context()->variables->are(x=>'Real',y=>'Real');

$a= random(1,3,1);

$polynomial = Formula("x^2+ 2*$a x y + $a^4 y^2")->reduce->TeX;

######################################
#  Main text

BEGIN_TEXT
Factor completely: 
$PAR
\( $polynomial = \)  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

if ($a==1) 
  {
  $answer = "(x+y)^2";
  ANS(FactoringEvaluator($answer,["x","y"])); 
  }
else
  {
  $answer  = "x^2+ 2*$a x y + $a^4 y^2";
  ANS(FactoringEvaluator("Does not factor",$answer,["x","y"])); 
}
$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();

