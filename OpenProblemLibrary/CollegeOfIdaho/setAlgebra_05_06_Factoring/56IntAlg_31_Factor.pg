DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl"
#  "contextPolynomialFactors.pl",
#  "contextLimitedPowers.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@alphabet = ("a","b","s","t","x","y");
$n = random(0,5,1);
$var= $alphabet[$n];
Context()->variables->are($var=>'Real');

$a = random(2,5,1);
do {$b = random(1,3,1);} until (gcd($a,$b)==1);
$c = random(-7,-2,1);
do {$d = random(1,7,1);} until (gcd($c,$d)==1);
$e = random(3,9,1);
$n = random(2,4,1);

$polynomial = Formula("($a*$d*$e) $var^($n+2) + $e*($a*$c + $b*$d) $var^($n+1) + ($b*$c*$e)$var^$n")->reduce->TeX;

######################################
#  Main text

BEGIN_TEXT
Factor completely: 
$PAR
\( $polynomial = \)  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

$showPartialCorrectAnswers = 1;

$answer  = "$e*$var^$n*($a * $var + $b) * ($d * $var + $c)";
ANS(FactoringEvaluator($answer,"$var")); 

######################################
#  Solution

$tex = Compute($answer)->reduce;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

$BR
 \($polynomial = $tex\)

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
