DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup



$a = random(1,3,1);  

$b = random(-1,1,2);  


$p = Formula("$a x^2 + $b x"); #Use this to build the polynomial


$input1 = list_random(-3,-2,2,3);    

$input2 = -1*$input1 + non_zero_random(-1,1,2);



$c= $p->eval(x=>$input2);    #Input2 is a zero of the polynomial.
$f = Compute($p - $c)->reduce;    
$poly = $f->TeX;


#----Scramble the input
@input = ($input1, $input2, 0);
@slice = NchooseK(3,3);
@x = @input[@slice];      #Want one positive, negative and zero
                         

######################################

#  Main text



BEGIN_TEXT

Find the indicated functional values.  



 \[ g(x) =   $poly   \]



$BR

$BR

a) \( g($x[0]) \) = \{ans_rule(15)\}

$BR

$BR

b) \( g($x[1]) \) = \{ans_rule(15)\}

$BR

$BR

c) \( g($x[2]) \) = \{ans_rule(15)\}

$BR

END_TEXT



######################################

#  Answer



$ans_a = $f->eval(x=>$x[0]);
ANS($ans_a->cmp);

$ans_b = $f->eval(x=>$x[1]);
ANS($ans_b->cmp);

$ans_c = $f->eval(x=>$x[2]);
ANS($ans_c->cmp);


$showPartialCorrectAnswers = 1;

######################################



COMMENT('MathObject version');
ENDDOCUMENT();

