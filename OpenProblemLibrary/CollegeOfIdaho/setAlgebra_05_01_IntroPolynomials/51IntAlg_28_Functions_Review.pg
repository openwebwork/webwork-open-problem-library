DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGnauGraphics.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$m1 = random(2,5,1);
$b1 = random(1,6,1);
$m2 = random(2,5,1);
$b2 = random(1,6,1);
$x = random(-1,1,1);

$input1 = random($x+1,$x+4,1);
$input2 = random($x-5,$x-1,1);

######################################
#  Main text

BEGIN_TEXT
Find the indicated values for the given function:
 \[ f(x) =
       \begin{cases}
            $m1 x - $b1,  &\text{if}\ x\leq $x\\            
            -$m2 x + $b2,   &\text{if}\ x>$x
       \end{cases}
\]
a) \( f($input1) \) = \{ans_rule(15)\}
$PAR
b) \( f($input2) \) = \{ans_rule(15)\}
$PAR
c) \( f($x) \) = \{ans_rule(15)\}
END_TEXT

######################################
#  Answers 

$ans_a = Real(-$m2*$input1+$b2);
ANS($ans_a->cmp);

$ans_b = Real($m1*$input2-$b1);
ANS($ans_b->cmp);

$ans_c = Real($m1*$x-$b1);
ANS($ans_c->cmp);

$showPartialCorrectAnswers = 1;

######################################


;
