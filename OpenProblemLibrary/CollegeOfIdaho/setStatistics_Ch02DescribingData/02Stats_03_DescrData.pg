DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl"
  );

TEXT(beginproblem());

######################################
#  Setup

$a1 = Real(random(10,20,1));
$a2 = $a1+random(0,10,1);
$a3 = $a2+random(2,10,1);
$a4 = $a3+random(5,15,1);
$a5 = $a4+random(2,10,1);
$a6 = $a5+random(0,5,1);
$a7 = $a6+random(1,10,1);
$a8 = $a7+random(0,5,1);

$mean = ($a1 + $a2 + $a3 + $a4 + $a5 + $a6 + $a7 + $a8)/8;
$median = ($a4+$a5)/2;

@data = ($a1, $a2, $a3, $a4, $a5, $a6, $a7, $a8);  #Scramble the data for display
@slice = NchooseK(8,8);
@sdata = @data[@slice];

#################################################
#  Main

BEGIN_TEXT
Calculate the mean and median of the following data: 
\[ $sdata[0], \ $sdata[1], \ $sdata[2], \ $sdata[3], \ $sdata[4], \ $sdata[5], \ $sdata[6], \ $sdata[7] \]

$PAR
Mean = \{ans_rule(10)\}

$PAR
Median = \{ans_rule(10)\}
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

ANS($mean->cmp);
ANS($median->cmp);

ENDDOCUMENT();       # This should be the last executable line in the problem.


