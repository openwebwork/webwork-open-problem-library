loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl"
);

TEXT(beginproblem());

######################################
#  Setup


$a =  random(1,9,2);

$b =  random(5,13,2);

$c = $b - random(1,3,1);  # b is bigger 


######################################

#  Main text



BEGIN_TEXT

Solve: \( |x+$a| + $b > $c \)

$PAR

Answer: \{ans_rule(20) \}

END_TEXT



######################################

#  Answer



Context("Inequalities-AllowStrings");
Context()->strings->add("No solution"=>{});



$ans = Compute("All real numbers");

ANS($ans->cmp);


$showPartialCorrectAnswers = 1;

