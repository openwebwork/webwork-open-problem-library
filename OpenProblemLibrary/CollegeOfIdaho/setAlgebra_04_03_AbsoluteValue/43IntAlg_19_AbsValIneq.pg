loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup


$a = random(2,8,1);



######################################

#  Main text



BEGIN_TEXT

Solve: \( |x| \ge $a  \)

$PAR

Answer: \{ans_rule(20) \}

END_TEXT



######################################

#  Answer



Context("Inequalities-AllowStrings");
Context()->strings->add("No solution"=>{});


$ans = Compute("x<=-$a or x>=$a");
ANS($ans->cmp);



$showPartialCorrectAnswers = 1;

