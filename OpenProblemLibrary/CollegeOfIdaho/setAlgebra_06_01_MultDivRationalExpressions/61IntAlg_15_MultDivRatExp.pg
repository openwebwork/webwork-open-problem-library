DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Forms: (x+a)/(x+b) * c(x+b)/d(x+a) a neq b

$a = non_zero_random(-5,5,1);
$b = non_zero_random(-5,5,1);
if ($b==$a) {$b = 6;}
$c = random(2,6,1);
$d = $c+random(1,3,1);

@polynomials = (Formula("(x + $a)/(x + $b)")->reduce->TeX,
                Formula("($c x + $c*$b)/($d x + $a*$d)")->reduce->TeX);
@slice = NchooseK(2,2);
@f = @polynomials[@slice];

######################################
#  Main text

BEGIN_TEXT
Multiply and simplify your answer.
\[$f[0] \cdot $f[1]\]
$PAR
Answer:  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

($num,$den) = reduce($c,$d);
$answer = "$num/$den";
if ($den==1) {$answer = "$num";}
ANS(RationalExpEvaluator($answer,"x"));  

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
