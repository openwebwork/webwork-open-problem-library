DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Form: x(x+ay)/(x+ay)(x-ay) * b(x-ay)/x


Context()->variables->are(x=>'Real',y=>'Real');


$a = non_zero_random(-5,5,1);

$b = random(2,5,1);



@polynomials = (Formula("(x^2 + $a xy)/(x^2 - $a*$a y^2)")->reduce->TeX,

             Formula("($b x - $a*$b y)/x")->reduce->TeX);
@slice = NchooseK(2,2);

@f = @polynomials[@slice];


######################################
#  Main text

BEGIN_TEXT
Multiply and simplify your answer.
\[$f[0] \cdot $f[1]\]
$PAR
Answer:  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer


$answer = "$b";

ANS(RationalExpEvaluator($answer,["x","y"])); 


$showPartialCorrectAnswers = 1;

######################################

COMMENT("Form: x(x+ay)/(x+ay)(x-ay) * b(x-ay)/x");

;
ENDDOCUMENT();

