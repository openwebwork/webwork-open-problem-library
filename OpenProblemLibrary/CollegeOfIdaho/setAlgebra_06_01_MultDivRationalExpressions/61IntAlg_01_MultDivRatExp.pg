##DESCRIPTION
##  Evaluating values in a rational function and finding the domain
## 
##ENDDESCRIPTION
## DBsubject(Algebra)
## DBchapter(Functions)
## DBsection(Domain and range)
## Institution(The College of Idaho)
## Author(RA Cruz)
## MLT(algebra_functions_domain_range_poly_over_poly)
## Level(2)
## MO(1)
## TitleText1('Essentials of Intermediate Algebra')
## AuthorText1('Blitzer')
## EditionText1('1')
## Section1('6.1')
## Problem1('')
## KEYWORDS('rational expressions','rational functions')
## Date: 2007/11

DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context()->strings->add("Does not exist"=>{});

$a= random(1,3,1);  
$b= random(-1,1,2);  
$c= random(-5,5,2);
do {$d = non_zero_random(-4,4,1);} 
while ($a*$d**2+$b*$d+$c == 0);   #Avoid 0/0

$f = Formula("($a x^2 + $b x + $c)/(x+$d)")->reduce;
$display_f = $f->TeX;
$f->perlFunction('f');

$input1 = -1*$d;    
do {$input2 = non_zero_random(-4,4,1);} while ($input2==$input1);
@input = ($input1, $input2, 0);
@output = (String("Does not exist"),f($input2),f(0));
@slice = NchooseK(3,3);
@x = @input[@slice];  
@y = @output[@slice];

######################################
#  Main text

BEGIN_TEXT
If possible, find the indicated values for the rational function. 
If the value does not exist, enter $BITALIC Does not exist $EITALIC.  
\[f(x) = $display_f \]
$PAR
a) \( f($x[0]) \) = \{ans_rule(20)\}
$PAR
b) \( f($x[1]) \) = \{ans_rule(20)\}
$PAR
c) \( f($x[2]) \) = \{ans_rule(20)\}
$PAR
d) Find the domain of \(f\): \{ans_rule(30)\}
END_TEXT

######################################
#  Answer

ANS($y[0]->cmp);
ANS($y[1]->cmp);
ANS($y[2]->cmp);

Context("Inequalities-AllowStrings");

$ans_d = Compute("x<$input1 or x>$input1");
ANS($ans_d->cmp->withPostFilter(AnswerHints(
            sub {
                my ($correct,$student,$ans) = @_;
                return $student =~ /y/ && $student=~/[<>]/;
                } => ["Use the variable  x  for the domain of a function.", 
                      checkCorrect => 1, 
                      score => 0]
)));

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
