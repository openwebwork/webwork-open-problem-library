DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a1 = random(2,12,1);
$a2 = random(-12,2,1);

$b1 = random(-8,-2,1);
$b2 = random(-12,-2,1);
######################################
#  Main text

BEGIN_TEXT
Multiply as indicated:  
$PAR
a) \( $a1($a2) = \)  \{ ans_rule(10) \} 
$PAR
b) \( ($b1)($b2) = \)  \{ ans_rule(10) \} 
$BR
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

Context("LimitedNumeric");

$ans_a=Real($a1 * $a2)->reduce;
ANS($ans_a->cmp);

$ans_b=Real($b1 * $b2)->reduce;
ANS($ans_b->cmp);

######################################

;
ENDDOCUMENT();
