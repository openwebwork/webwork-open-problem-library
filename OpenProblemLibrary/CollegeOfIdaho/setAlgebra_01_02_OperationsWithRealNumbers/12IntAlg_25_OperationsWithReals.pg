##DESCRIPTION
##  Simplifying algebraic expressions
##
##ENDDESCRIPTION
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Simplifying expressions)
## Institution(The College of Idaho)
## Author(RA Cruz)
## Level(2)
## MO(1)
## TitleText1('Essentials of Intermediate Algebra')
## AuthorText1('Blitzer')
## EditionText1('1')
## Section1('1.2')
## Problem1('')
## KEYWORDS('algebraic expressions')
## Date: 2007/09

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context("Numeric");

$a1 = random(2,9,1);
$a2 = non_zero_random(-4,4,1);
$a3 = non_zero_random(-9,9,1);
$a4 = random(5,10,1);
$a = Formula ("$a1 x + $a2 x^2 + $a3 x + $a4 x^2")->reduce;

$b1 = random(2,4,1);
$b2 = random(3,8,1);
do {
   $b3 = non_zero_random(-6,6,1);
   $b4 = non_zero_random(-4,4,1);} until ($b3<0 || $b4<0);
$b = Formula("$b1($b2 x + $b3) + $b4 x")->reduce;

######################################
#  Main text

BEGIN_TEXT
Simplify each algebraic expression. 
$BR Note:  Use $BBOLD \(x \wedge 2\) $EBOLD  for \( x^2 \).
$PAR
a) \( \{$a->TeX\} = \) \{ ans_rule(10) \} 
$PAR
b) \( \{$b->TeX\}= \) \{ ans_rule(10) \} 
$BR
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

Context("LimitedPolynomial")->flags->set(singlePowers=>1);

$ans_a = Formula("($a2+$a4) x^2 + ($a1+$a3) x")->reduce;
ANS($ans_a->cmp);

$ans_b = Formula("($b1*$b2+$b4) x + ($b1*$b3)")->reduce;
ANS($ans_b->cmp);

######################################

COMMENT('MathObject version');
ENDDOCUMENT();
