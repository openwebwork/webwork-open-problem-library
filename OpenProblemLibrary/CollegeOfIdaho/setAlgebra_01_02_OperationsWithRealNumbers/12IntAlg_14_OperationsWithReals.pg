DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a = list_random(-2,-3,-10);
$e = random(4,10,1);

######################################
#  Main text

BEGIN_TEXT
Evaluate each exponential expression:  
$PAR
a) \( ($a)^3 = \)  \{ ans_rule(10) \} 
$PAR
b) \( (-1)^{$e} = \)  \{ ans_rule(10) \} 
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

Context("LimitedNumeric");

$ans_a=($a)**3;
ANS(Compute($ans_a)->cmp);

$ans_b=(-1)**$e;
ANS(Real($ans_b)->cmp);

######################################

;
ENDDOCUMENT();
