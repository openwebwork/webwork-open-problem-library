DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "answerHints.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a = list_random(-4,-3,2,2,3,4);
$b = non_zero_random(-6,6,1);
$c = non_zero_random(-3,3,1);

do {$d = non_zero_random(-6,6,1);} while($a*$c-$d==0);

$e = non_zero_random(-6,6,1);

$poly1 = nicestring([$b,$c],["","x"]);
$poly2 = nicestring([$d,$e],["x",""]);

######################################
#  Main text

BEGIN_TEXT
Solve:
\[ $a($poly1) \le $poly2 \]
Answer: \{ans_rule(35) \}
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");
Context()->strings->add("No solution"=>{});

($num,$den)= reduce($e-$a*$b, $a*$c-$d);
$n = "$num/$den";
if ($den==1) {$n = "$num";}

if ($a*$c-$d>0) {
$ans = Compute("(-infinity,$n]");}
else
{$ans = Compute("[$n,infinity)");}
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();


