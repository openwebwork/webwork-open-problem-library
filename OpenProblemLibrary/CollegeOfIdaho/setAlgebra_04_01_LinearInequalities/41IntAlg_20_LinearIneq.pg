DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$b =  random(2,3,1);
$c =  random(1,5,4);
$d = random(2,4,1);
$e = 2 * $b;
$ans = random(1,6,1);
$a = -2 + $ans * ($c - 2 - 2*$b*$d);

######################################
#  Main text

BEGIN_TEXT
Solve:
\[ \frac{$a}{$e} - \frac{1}{$b}x + \frac{$c}{$e}x \leq $d x - \frac{1}{$b} \]
Answer: \{ans_rule(20)\}
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");
Context()->strings->add("No solution"=>{});

$ans = Compute("x>=-$ans");
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
