DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "answerHints.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@alphabet = ("a","b","x","y");
$choose = random(0,3,1);
$var = $alphabet[ $choose ];

$a = random(2,5,1);
$b= random(4,5,1);
$c= random(2,3,1);
$ans = $b - random(1,3,1);
$d = $a * $b * $c + $ans * (1 - $a * $c);

######################################
#  Main text

BEGIN_TEXT
Solve: 
 \[ -$a($var - $b) + \frac{$var}{$c} - \frac{$d}{$c} < 0 \]
Answer:  \{ ans_rule(20) \} 
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");
Context()->strings->add("No solution"=>{});
Context()->variables->are($var=>'Real');

$ans = Compute("$var>$ans");
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

######################################



COMMENT('MathObject version');
ENDDOCUMENT();
