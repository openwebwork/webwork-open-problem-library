DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "CofIdaho_macros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

#----input
$input1 = list_random(-3,-2,2,3);      #Randomly selects from the list
$input2 = -1*$input1 + non_zero_random(-1,1,2);
@input = ($input1, $input2, 0);
@slice = NchooseK(3,3);
@x = @input[@slice];      #Want one positive, negative and zero
                          #and input2 is a zero of the polynomial.
#----build polynomials
($a1,$a0) = (1, -1*$input1);    

($b2,$b1,$b0) = ( random(1,3,1),
                  random(-1,1,2), 
                  non_zero_random(-5,5,2) );

$poly1 = nicestring([$a1,$a0],["x",""]);
$poly2 = nicestring([$b2,$b1,$b0],["x^2","x",""]);

######################################
#  Main text

BEGIN_TEXT
Let \( f(x) =  $poly1 \) and  \( g(x) =  $poly2 \).  Find each of the following and simplify. 
$PAR
a) \( (fg)(x) \) = \{ans_rule(30)\}
$PAR
b) \( (fg)($x[0]) \) = \{ans_rule(15)\}
$PAR
c) \( (fg)($x[1]) \) = \{ans_rule(15)\}
END_TEXT

######################################
#  Answer

Context("LimitedPolynomial-Strict");

#---Coefficients and powers
($c3,$c2,$c1,$c0) = ( $a1*$b2, $a1*$b1+$a0*$b2, $a1*$b0+$a0*$b1, $a0*$b0 );

$fg = Formula("$c3 x^3 + $c2 x^2 + $c1 x + $c0");
$ans_a = $fg->reduce;
ANS($ans_a->cmp);

$ans_b = $fg->eval(x=>$x[0]);
ANS($ans_b->cmp);

$ans_c = $fg->eval(x=>$x[1]);
ANS($ans_c->cmp);

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
