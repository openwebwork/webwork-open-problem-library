DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context("LimitedPolynomial-Strict");

($a1,$a0) = (random(1,3,2),non_zero_random(-5,5,2));   
($b1,$b0) = (random(2,4,2),random(1,5,2));          

@factor = (nicestring([$a1,$a0],["x^2",""]),nicestring([$b1,$b0],["x",""]));
@slice = NchooseK(2,2);
@poly = @factor[@slice];

######################################
#  Main text

BEGIN_TEXT
Multiply the polynomials:  \( ( $poly[0] ) ( $poly[1] ) \)
$PAR
Answer:  \{ ans_rule(40) \} 
END_TEXT

######################################
#  Answer

($c3,$c2,$c1,$c0) = ($a1*$b1,$a1*$b0,$a0*$b1,$a0*$b0);
$ans = Formula("$c3*x^3 + $c2*x^2 + $c1*x + $c0")->reduce;
ANS($ans->cmp); 

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
