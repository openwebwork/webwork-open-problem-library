DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context("LimitedPolynomial-Strict");

($a1,$a0) = (1, non_zero_random(-4,-4,1));    

($b2,$b1,$b0) = ( 1,
                  random(1,3,1), 
                  non_zero_random(-4,4,1) );

$poly1 = nicestring([$a1,$a0],["x",""]);
$poly2 = nicestring([$b2,$b1,$b0],["x^2","x",""]);

######################################
#  Main text

BEGIN_TEXT
Multiply the polynomials:  \( ( $poly1 ) ( $poly2 ) \)
$PAR
Answer:  \{ ans_rule(40) \} 
END_TEXT

######################################
#  Answer

($c3,$c2,$c1,$c0) = ($a1*$b2, $a1*$b1+$a0*$b2, $a1*$b0+$a0*$b1, $a0*$b0);
$ans=Formula("$c3 x^3 + $c2 x^2 + $c1 x + $c0")->reduce;
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
