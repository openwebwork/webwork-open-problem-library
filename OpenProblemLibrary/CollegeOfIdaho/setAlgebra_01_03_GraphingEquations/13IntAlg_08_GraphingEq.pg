DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a = random(2,8,1);

@functions = ("$a - x","x^2","-x^2","|x|","-|x|");
@x_intercept = ($a, 0, 0, 0, 0);
@slice = NchooseK(5,4);
@fs = @functions[@slice];

$f = Formula($fs[0]);     #Choose the first function in the list
$y_3 = $f->eval(x=>-3);
$y_2 = $f->eval(x=>-2);
$y_1 = $f->eval(x=>-1);
$y0 = $f->eval(x=>0);
$y1 = $f->eval(x=>1);
$y2 = $f->eval(x=>2);
$y3 = $f->eval(x=>3);

$mc = new_multiple_choice();

$mc -> qa ( "Which equation corresponds to the points given in the table?",
            "\( y = $fs[0] \)"                   
);
$mc ->extra(       
        "\( y = $fs[1] \)",             
        "\( y = $fs[2] \)",       
        "\( y = $fs[3] \)"
    
);

######################################
#  Main text

BEGIN_TEXT
Use the table of values given below to solve the following exercises. 
$BR
$BCENTER
\{begintable(2)\}
\{row(' \(x\) ','\(y\)') \}
\{row( '\(-3\)', '\($y_3\)') \}
\{row( '\(-2\)', '\($y_2\)') \}
\{row( '\(-1\)', '\($y_1\)' )\}
\{row( '\(0\)',  '\($y0\)' )\}
\{row( '\(1\)',  '\($y1\)' )\}
\{row( '\(2\)',  '\($y2\)' )\}
\{row( '\(3\)',  '\($y3\)' )\}
\{endtable()\}
$ECENTER
$Par
a) \{$mc -> print_q \}
$BR
\{$mc -> print_a\}
$PAR
b) Does the graph of the equation pass through the origin? 
(Enter: $BITALIC Yes $EITALIC or $BITALIC No $EITALIC)
$BR
Answer:  \{ ans_rule(10) \} 
$PAR
c) At which point does the graph of the equation cross the \(x\)-axis? 
$BR
Answer:  \{ ans_rule(10) \} 
$PAR
d) At which point does the graph of the equation cross the \(y\)-axis?
$BR
Answer:  \{ ans_rule(10) \} 
$BR
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

ANS(str_cmp( $mc->correct_ans )   ) ;

Context()->strings->add("No"=>{},"Yes"=>{});

$ans_b = "No";
if ($y0==0) {$ans_b = "Yes";};
ANS(String($ans_b)->cmp);

Context("Point");

$ans_c = Point($x_intercept[$slice[0]],0);
ANS($ans_c->cmp);

$ans_d = Point(0,$y0);
ANS($ans_d->cmp);

######################################


COMMENT('MathObject version');
ENDDOCUMENT();


