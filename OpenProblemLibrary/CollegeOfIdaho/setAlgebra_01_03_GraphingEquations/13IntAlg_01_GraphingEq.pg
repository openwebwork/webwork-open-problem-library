DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

#------ Select the points--------------

@x = (-5,-4,-3,-2,-1,0,1,2,3,4);
@choose = NchooseK(10,4);

$ax = $x[$choose[0]];
$ay = random(-4,5,1);

$bx = $x[$choose[1]];
$by = random(-4,5,1);

$cx = $x[$choose[2]];
$cy = random(-4,5,1);

$dx = $x[$choose[3]];
$dy = random(-4,5,1);

if ($ax*$bx*$cx*$dx!=0) {$cx = 0;};
if ($ay*$by*$cy*$dy!=0) {$by = 0;};
if ($ax*$bx>0) {$ax = -1*$ax;};

#-------- Make the grid ---------------

$graph = init_graph(-6,-6,6,6,grid =>[12,12],axes=>[0,0],
         size=>[400,400]);
$graph->lb('reset');
$i = 0;
do {
  $x = $i - 5;
  if ($x!=0) {$graph->lb(new Label($x,0, "$x",'black','center'));};
  $i =$i+1;
} while ($i<11);

$i = 0;
do {
  $y = $i - 5;
  if ($y!=0) {$graph->lb(new Label(-.2,$y+.1, "$y",'black','center'));}; 
  $i =$i+1;
} while ($i<11);

#------- PLot the points ----------------

$choose = random(0,2,1);
@colors = ("blue", "red", "orange");
$color = $colors[$choose];

$A = closed_circle($ax,$ay,"$color");
$labelA = new Label($ax+.3,$ay, "A","$color",'center');

$B = closed_circle($bx,$by,"$color");
$labelB = new Label($bx+.3,$by, "B","$color",'center');

$C = closed_circle($cx,$cy,"$color");
$labelC = new Label($cx+.3,$cy, "C","$color",'center');

$D = closed_circle($dx,$dy,"$color");
$labelD = new Label($dx+.3,$dy, "D","$color",'center');

$graph->stamps($A,$B,$C,$D);
$graph->lb($labelA,$labelB,$labelC,$labelD);

######################################
#  Main text

BEGIN_TEXT
$BCENTER
\{ image( insertGraph($graph), width=>400, 
    height=>400, tex_size=>600 ) \}
$ECENTER
$BR
$BR
Give the coordinates of the points on the graph. 
$PAR
a) \( A \) : \{ans_rule(10)\}
$PAR
b) \( B \) : \{ans_rule(10)\}
$PAR
c) \( C \) : \{ans_rule(10)\}
$PAR
d) \( D \) : \{ans_rule(10)\}
$BR
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

Context("Point");

$ans_a = Point($ax,$ay);
ANS($ans_a->cmp);

$ans_b = Point($bx,$by);
ANS($ans_b->cmp);

$ans_c = Point($cx,$cy);
ANS($ans_c->cmp);

$ans_d = Point($dx,$dy);
ANS($ans_d->cmp);

######################################

;
ENDDOCUMENT();
