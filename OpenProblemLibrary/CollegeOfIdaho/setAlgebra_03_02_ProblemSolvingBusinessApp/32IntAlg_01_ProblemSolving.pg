DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a = random(2,20,1);
$num = random( 4, 11, 1 );
$b = $a * $num; 
$diff = $b - $a;
 
######################################
#  Main text

BEGIN_TEXT
One positive number is $num times another number. The difference between 
the two numbers is $diff, find the numbers. 
$PAR
Answer:  \{ans_rule(10) \}.
END_TEXT

######################################
#  Answer

ANS(List("$a,$b")->cmp);

$showPartialCorrectAnswers = 1;

