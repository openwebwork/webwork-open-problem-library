DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context()->variables->are(A=>'Real',
                          B=>'Real',
                          C=>'Real',
                          x=>'Real',
                          y=>'Real');

$n = random(0,1,1);
@var = ("x", "y");
@answer = (Formula("(C - By)/A"), Formula("(C - Ax)/B"));

######################################
#  Main text

BEGIN_TEXT
Solve for $BITALIC $var[$n]$EITALIC: \[ Ax + By =C \]
$PAR
\( $var[$n] = \) \{ans_rule(15) \}
END_TEXT

######################################
#  Answers

$ans = $answer[$n];
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
