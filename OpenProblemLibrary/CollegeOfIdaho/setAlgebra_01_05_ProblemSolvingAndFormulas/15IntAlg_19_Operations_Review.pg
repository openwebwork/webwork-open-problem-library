DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a = random(1,9,1);
$b = random(1,9,1);
$c = random(-5,-2,1);
$d = random(2,5,1);
$e = random(2,5,1);
$f = random(2,5,1);
$g = random(2,5,1);
$h = random(2,5,1);

######################################
#  Main text

BEGIN_TEXT
Simplify \[ $a - $b($c($d-$e) - $f($g - $h)) \]
$PAR
Answer: \{ans_rule(15) \}
END_TEXT

######################################
#  Answers

Context("LimitedNumeric-StrictFraction"); #Better if a reduced fraction was required

$ans = Real($a - $b*($c*($d-$e) - $f*($g - $h)));
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();
