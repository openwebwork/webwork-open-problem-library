DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@alphabet = ("a","b","s","t","x","y");
$n = random(0,2,2);

$var1= $alphabet[$n];
$var2= $alphabet[1+$n];
$var3= $alphabet[2+$n];
$var4= $alphabet[3+$n];
Context()->variables->are($var1=>'Real',$var2=>'Real',
                          $var3=>'Real',$var4=>'Real');

$a = random(2,7,1);
do {$b= random(2,7,1);} until (gcd($a,$b)==1);
$c = random(2,7,1);
do {$d= random(2,7,1);} until (gcd($c,$d)==1);
$ac = $a * $c;
$bc = $b * $c;
$ad = $a * $d;
$bd = $b * $d;
$e = random(2,4,1);

######################################
#  Main text

BEGIN_TEXT
Factor by grouping:  
$PAR
\($ac $var1 $var3 - $bc $var2 $var3 + $ad $var1 $var4^2 - $bd $var2 $var4^2 = \)
\{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

$answer = "($c * $var3 + $d * $var4^2) * ($a * $var1 - $b * $var2)";
ANS(FactoringEvaluator($answer,[$var1,$var2,$var3,$var4])); 

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();


























