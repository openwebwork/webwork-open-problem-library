DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "PGnauGraphics.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$xmin = -6;
$ymin = -6;
$xmax = 6;
$ymax = 6;

#----Define the equations for intersecting lines
Context()->variables->add(y=>'Real');

$dx1 = random(1,4,1);
$dy1 = random(1,2,1);
$dx2 = random(-4,-1,1);         #Different slopes
$dy2 = random(1,2,1);

$m1 = Real(-1*$dy1 / $dx1);          
$m2 = Real(-1*$dy2 / $dx2); 

$x = random(-3,3,1);           #Make a nice intersection point              
$y = random(-3,3,1);

$b1 = $y - $m1*$x;
$b2 = $y - $m2*$x;

$f1 = Formula("$m1*x+$b1");
$f2 = Formula("$m2*x+$b2");

@slice = NchooseK(3,3);
@colors = ("blue", "red", "green");
@sc = @colors[@slice]; #scrambled colors

$f1_graph = FEQ("$f1 for x in [$xmin,$xmax] using color=$sc[0] and weight=3");
$f2_graph = FEQ("$f2 for x in [$xmin,$xmax] using color=$sc[1] and weight=3");

#----Build the graph
$graph = init_graph_no_labels($xmin,$ymin,$xmax,$ymax,
                              'axes'=>[0,0],
                              'grid'=>[$xmax-$xmin,$ymax-$ymin]);
add_functions( $graph,$f1_graph,$f2_graph);

#NOTE: THE LABELS SHOULD BE CHANGED TO $line1 and $line2
#      ONCE THE FORMATTING IS FIGURED OUT. IF YOU WANT LABELS
#$line1 = Formula("$dy1 x + $dx1 y")->reduce('(-x)-y'=>0);
#$line2 = Formula("$dy2 x + $dx2 y")->reduce('(-x)-y'=>0);
#$c1 = $line1->eval(x=>0,y=>$b1);
#$c2 = $line2->eval(x=>0,y=>$b2);
#$label1 = new Label(-3,$f1->eval(x=>-3), "$dy1 x + $dx1 y = $c1",'black','center'); 
#$label2 = new Label( 3,$f2->eval(x=>3), "$dy2 x + $dx2 y = $c2",'black','center'); 
#$graph->lb($label1, $label2);

$i = 0;           # Number the axes
do {
  $xtick = $i + $xmin + 1;
  $labelx[$i] = new Label($xtick,0, "$xtick",'black','center');
  if ($xtick!=0) {$graph->lb($labelx[$i]);}
  $i =$i+1;
} while ($i<($xmax-$xmin)-1);

$i = 0;
do {
  $ytick = $i +$ymin + 1;
  $labely[$i] = new Label(-.2,$ytick+.1, "$ytick",'black','center');
  if ($ytick!=0) {$graph->lb($labely[$i]);} 
  $i =$i+1;
} while ($i<($ymax-$ymin)-1);

######################################
#  Main text

BEGIN_TEXT
\{ Plot($graph, tex_size => 600) \}
$BR $BR
Consider a system of two linear equations in two variables.  The graphs of the two equations are shown above. Find the solution for the system.
$PAR
Answer: \{ans_rule(15)\}
END_TEXT

######################################
#  Answer

Context("Vector");
Context()->strings->add("None"=>{},
                        "Does not exist"=>{alias=>'None'},
                        "Not defined"=>{alias=>'None'},
                        "No solution"=>{alias=>'None'}
                        );
Context()->variables->are(x=>'Real',y=>'Real');

$ans = Point($x,$y);
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

######################################


;
ENDDOCUMENT();

