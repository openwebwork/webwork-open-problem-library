DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextScientificNotation.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context(ScientificNotation);

$num1 = random(1.1,9,.1);
$exp1 = random(3,7,1);
$num2 = random(2,9,1);
$exp2 = random(3,7,1);

$a = ScientificNotation($num1 * 10**$exp1);
$b = ScientificNotation($num2 * 10**$exp2);

######################################
#  Main text

BEGIN_TEXT
Perform the computation and write the result 
in scientific notation:
$PAR
\( \displaystyle \frac{\{$a->TeX\}}{\{$b->TeX\}} \) =  
      \{ ans_rule(20) \}
END_TEXT

######################################
#  Answers

$num3 = $num1/$num2;
$exp3 = $exp1-$exp2;
if ($num3<1) {$num3=$num3*10; $exp3=$exp3-1;} 

$answer = ScientificNotation($num3 * 10**$exp3);
ANS($answer->cmp);	
	
$showPartialCorrectAnswers = 1;

