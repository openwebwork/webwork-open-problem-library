DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$num1 = random(2,5,1);
$num2 = random(2,5,1);
$num3 = random(1,5,2);
$f = Formula("($num1 x - $num2)/(x - $num3)");

do {$a = random(0,6,2);} while ($a==$num3);
$b = non_zero_random(-4,4,1);

######################################
#  Main text

BEGIN_TEXT
Let \( \displaystyle f(x)= \{$f->TeX\} \). Find:
$PAR
a)  \( f($a) \) = \{ans_rule(15) \}
$PAR
b)   \( f(t ? {$b}) \) = \{ans_rule(15) \}
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

Context()->strings->add("No solution"=>{},
                        "Not defined"=>{},
                        "Does not exist"=> {},
                        "All real numbers"=>{});

$ans_a = $f->eval(x=>$a);
ANS($ans_a->cmp);

Context()->variables->add(t=>'Real');

$ans_b = $f->substitute(x=>"t+$b")->reduce;
ANS($ans_b->cmp);

######################################
#  Solution

#--NOTE: Better if intermediate steps could be "automated".
$b_sub = $f->substitute(x=>"t+$b");

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
Substitute the given values into \(f(x) = $f\):
$BR
a)  \( f($a) = $ans_a\)
$PAR
b)   \( f(t ? {$b})  = $ans_b\)
END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
