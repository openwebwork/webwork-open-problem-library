DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$num1 = random(2,5,1);
$num2 = random(2,5,1);
$num3 = random(2,5,1);
$h = Formula("$num1 x^2 + $num2 x - $num3");

$var = list_random("a","b","c","t");
$a = random(0,5,1);
$b = random(1,5,1);
if ($a!=0) {$b = 0;}  #Either $a or $b will be zero
$c = random(-5,-1,1);
$e = random(2,5,1);

######################################
#  Main text

BEGIN_TEXT
Let \(h(x)= \{$h->TeX\}\). Find:
$PAR
a)  \( h($a) \) = \{ans_rule(15) \}
$PAR
b)  \( h($b) \) = \{ans_rule(15) \}
$PAR
c)  \( h($c) \) = \{ans_rule(15) \}
$PAR
d)  \( h($var) \) = \{ans_rule(15) \}
$PAR
e)  \( h($e $var) \) = \{ans_rule(15) \}
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

Context()->strings->add("No solution"=>{},
                        "Not defined"=>{},
                        "Does not exist"=> {},
                        "All real numbers"=>{});

$ans_a = $h->eval(x=>$a);
ANS($ans_a->cmp);

$ans_b = $h->eval(x=>$b);
ANS($ans_b->cmp);

$ans_c = $h->eval(x=>$c);
ANS($ans_c->cmp);

Context()->variables->add($var=>'Real');

$ans_d = $h->substitute(x=>"$var")->reduce;
ANS($ans_d->cmp);

$ans_e = $h->substitute(x=>"$e * $var")->reduce;
ANS($ans_e->cmp);

######################################
#  Solution

#--NOTE: Better if intermediate steps could be "automated".
$a_sub = $h->substitute(x=>$a);
$d_sub = $h->substitute(x=>"$var");
$e_sub = $h->substitute(x=>"$e*$var");

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$BR
a) \(h($a) = $ans_a \)
$BR
b) \(h($b) = $ans_b \)
$BR
c) \(h($c) = $ans_c \)
$BR
d) \(h($var) = $ans_d \)
$BR
e) \(h($e*$var) = $e_sub = $ans_e \)
END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
