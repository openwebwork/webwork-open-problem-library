DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$num1 = random(2,5,1);
$num2 = random(2,5,1);
$g = Formula("$num1 x^2 + $num2")->reduce;

$a = random(0,5,1);
$b = random(1,5,1);
if ($a!=0) {$b = 0;}  #Either $a or $b will be zero
$c = random(-5,-1,1);
$e = random(2,5,1);

######################################
#  Main text

BEGIN_TEXT
Let \(g(x)= \{$g->TeX\} \). Find:
$PAR
a)  \( g($a) \) = \{ans_rule(15) \}
$PAR
b)  \( g($b) \) = \{ans_rule(15) \}
$PAR
c)  \( g($c) \) = \{ans_rule(15) \}
$PAR
d)  \( g(b) \) = \{ans_rule(15) \}
$PAR
e)  \( g($e b) \) = \{ans_rule(15) \}
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

Context()->strings->add("No solution"=>{},
                        "Not defined"=>{},
                        "Does not exist"=> {},
                        "All real numbers"=>{});

$ans_a = $g->eval(x=>$a);
ANS($ans_a->cmp);

$ans_b = $g->eval(x=>$b);
ANS($ans_b->cmp);

$ans_c = $g->eval(x=>$c);
ANS($ans_c->cmp);

Context()->variables->add(b=>'Real');

$ans_d = $g->substitute(x=>"b")->reduce;
ANS($ans_d->cmp);

$ans_e = $g->substitute(x=>"$e*b")->reduce;
ANS($ans_e->cmp);

######################################
#  Solution

#--NOTE: Better if intermediate steps could be "automated".
$a_sub = $g->substitute(x=>$a);
$d_sub = $g->substitute(x=>"b");
$e_sub = $g->substitute(x=>"$e*b");

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$BR
a) \(g($a) = $ans_a \)
$BR
b) \(g($b) = $ans_b \)
$BR
c) \(g($c) = $ans_c \)
$BR
d) \(g(b) = $ans_d \)
$BR
e) \(g($e*b) = $e_sub = $ans_e \)
END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
