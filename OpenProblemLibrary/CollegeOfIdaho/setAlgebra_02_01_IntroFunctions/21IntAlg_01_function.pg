DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$num = random(2,5,1);
$f = Formula("x + $num");

$a = random(0,5,1);
$b = random(1,5,1);
if ($a!=0) {$b = 0;}  #Either $a or $b will be zero
$c = random(-5,-1,1);
$d = random(2,4,1);
$e = random(1,5,1);

######################################
#  Main text

BEGIN_TEXT
Let \(f(x)= \{$f->TeX\} \). Find and simplify:
$PAR
a)  \( f($a) \) = \{ans_rule(15) \}
$PAR
b)  \( f($b) \) = \{ans_rule(15) \}
$PAR
c)  \( f($c) \) = \{ans_rule(15) \}
$PAR
d)  \( f($d a) \) = \{ans_rule(15) \}
$PAR
e)  \( f(a + $e) \) = \{ans_rule(15) \}
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

Context()->strings->add("No solution"=>{},
                        "Not defined"=>{},
                        "Does not exist"=> {},
                        "All real numbers"=>{});

$ans_a = $f->eval(x=>$a);
ANS($ans_a->cmp);

$ans_b = $f->eval(x=>$b);
ANS($ans_b->cmp);

$ans_c = $f->eval(x=>$c);
ANS($ans_c->cmp);

Context()->variables->add(a=>'Real');

$ans_d = $f->substitute(x=>"$d*a")->reduce;
ANS($ans_d->cmp);

$ans_e = $f->substitute(x=>"a+$e")->reduce;
$ans_e = Formula("a + ($e+$num)")->reduce;
ANS($ans_e->cmp);

######################################
#  Solution

#--NOTE: Better if intermediate steps could be "automated".
$a_sub = $f->substitute(x=>$a);
$d_sub = $f->substitute(x=>"$d*a");
$e_sub = $f->substitute(x=>"a+$e");

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$BR
a) \(f($a) = $ans_a \)
$BR
b) \(f($b) = $ans_b \)
$BR
c) \(f($c) = $ans_c \)
$BR
d) \(f($d a) = $ans_d \)
$BR
e) \(f(a + $e) = $e_sub = $ans_e \)
END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
