##DESCRIPTION
##  Operations on functions using graphs
## 
##ENDDESCRIPTION
## DBsubject(Algebra)
## DBchapter(Functions)
## DBsection(Compositions and combinations of functions)
## Institution(The College of Idaho)
## Author(RA Cruz)
## MLT(cc-graphs-evaluate)
## Level(2)
## MO(1)
## TitleText1('Essentials of Intermediate Algebra')
## AuthorText1('Blitzer')
## EditionText1('1')
## Section1('2.2')
## Problem1('')
## KEYWORDS('function operations', 'domain')
## Date: 2007/09 updated 2013/09 -rac

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "contextPiecewiseFunction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

#Context("PiecewiseFunction");

#----define graph f and graph g:

@dom = (-6,6);

#----define the function pieces

@fxnum = (random(-5,-4,1),random(-3,-2,1),
         random(-1,0,1),random(1,2,1),random(3,4,1));
@gxnum = ($fxnum[0],random(-3,-2,1),
         random(-1,0,1),random(1,2,1),$fxnum[4]);
@slice = NchooseK(9,9);
@value = (-1,0,1,2,3,4,5,6,7)[@slice];
@fynum = ($value[0],$value[0],$value[1],$value[1],$value[2]);
@gynum = ($value[3],$value[4],$value[4],$value[5],$value[5]);

#-------------f---------
$i = 0;
do {
   $m = ($fynum[$i+1]-$fynum[$i])/($fxnum[$i+1]-$fxnum[$i]);
   $f_parts[$i] = Formula("$m*x + ($fynum[$i]-$m*$fxnum[$i])");
   $i=$i+1;
} until ($i>3);

@f_interval = (Interval("[$fxnum[0],$fxnum[1])"),
               Interval("[$fxnum[1],$fxnum[2])"),
               Interval("[$fxnum[2],$fxnum[3])"),
               Interval("[$fxnum[3],$fxnum[4]]"));

#-------------g----------
$i = 0;
do {
   $m = ($gynum[$i+1]-$gynum[$i])/($gxnum[$i+1]-$gxnum[$i]);
   $g_parts[$i] = Formula("$m*x + ($gynum[$i]-$m*$gxnum[$i])");
   $i=$i+1;
} until ($i>3);

@g_interval = (Interval("[$gxnum[0],$gxnum[1])"),
               Interval("[$gxnum[1],$gxnum[2])"),
               Interval("[$gxnum[2],$gxnum[3])"),
               Interval("[$gxnum[3],$gxnum[4]]"));
 
$interval = "[$fxnum[0],$fxnum[4]]";     #These values are the same for g                

#----make the graph
#    Note: This could be better if the Piecewise functions would graph

$refreshCachedImages=1;

$xmin = $dom[0];
$ymin = -2;
$xmax = $dom[1];
$ymax = 8;

$graph = init_graph($xmin,$ymin,$xmax,$ymax, 
                              axes =>[0,0], 
                              grid =>[$xmax-$xmin,$ymax-$ymin]);
$graph->lb('reset');
add_functions( $graph,
              "$f_parts[0] for x in $f_interval[0] using color:red and weight:3",
              "$f_parts[1] for x in $f_interval[1] using color:red and weight:3",
              "$f_parts[2] for x in $f_interval[2] using color:red and weight:3",
              "$f_parts[3] for x in $f_interval[3] using color:red and weight:3",
              "$g_parts[0] for x in $g_interval[0] using color:blue and weight:3",
              "$g_parts[1] for x in $g_interval[1] using color:blue and weight:3",
              "$g_parts[2] for x in $g_interval[2] using color:blue and weight:3",
              "$g_parts[3] for x in $g_interval[3] using color:blue and weight:3");

#----Label the graphs

$graph->lb(new Label($fxnum[4]+.5,$f_parts[3]->eval(x=>$fxnum[4]), "y=f(x)",'red','left') );
$graph->lb( new Label($gxnum[4]+.5,$g_parts[3]->eval(x=>$gxnum[4]), "y=g(x)",'blue','left') );

$i = 0;           # Number the axes
do {
  $xtick = $i + $xmin + 1;
  if ($xtick!=0) {$graph->lb(new Label($xtick,0,"$xtick",'black','center'));}
  $i =$i+1;
} while ($i<($xmax-$xmin)-1);

$i = 0;
do {
  $ytick = $i +$ymin + 1;
  if ($ytick!=0) {$graph->lb(new Label(-.2,$ytick+.1,"$ytick",'black','center'));} 
  $i =$i+1;
} while ($i<($ymax-$ymin)-1);

$input = random($fxnum[0],$fxnum[4],1);

#-----Define the functions last because of context issues

Context("PiecewiseFunction");

$f = PiecewiseFunction($f_interval[0] => $f_parts[0],
                       $f_interval[1] => $f_parts[1],
                       $f_interval[2] => $f_parts[2],
                       $f_interval[3] => $f_parts[3]);
$g = PiecewiseFunction($g_interval[0] => $g_parts[0],
                       $g_interval[1] => $g_parts[1],
                       $g_interval[2] => $g_parts[2],
                       $g_interval[3] => $g_parts[3]);

######################################
#  Main text

BEGIN_TEXT
$BCENTER
\{ image( insertGraph($graph), 
width=>400,height=>400,tex_size=>600 ) \}
$ECENTER
$BR
The graph of \( f \) is shown in red, and the graph of \( g \) is shown in blue. Use the graphs to evaluate each quantity given below.
$BR 
NOTE: If only a blue section of graph shows up, that means the red
graph is behind it.
$BR
NOTE: Write 'Does not exist' if the value does not exist.
$PAR
a) \( f($input) =\) \{ans_rule(20)\}
$PAR
b) \( g($input) =\) \{ans_rule(20)\}
$PAR
c) \( f($input) + g($input) =\) \{ans_rule(20)\}
$PAR
d) \( (f - g)($input) =\) \{ans_rule(20)\}
END_TEXT

######################################
#  Answers 

Context("Numeric");
$f_value = $f->eval(x=>$input)->inContext(Context())
              ->with(tolerance=>0.1,toltype=>'absolute');
$g_value = $g->eval(x=>$input)->inContext(Context())
              ->with(tolerance=>0.1,toltype=>'absolute');

$ans_a = $f_value;
ANS($ans_a->cmp);

$ans_b = $g_value;
ANS($ans_b->cmp);

$ans_c = $f_value + $g_value;
ANS($ans_c->cmp);

$ans_d = $f_value - $g_value;
ANS($ans_d->cmp);

$showPartialCorrectAnswers = 1;

######################################
#  Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$BR
a) \( f($input) = $ans_a\)
$PAR
b) \( g($input) =  $ans_b\)
$PAR
c) \( f($input) + g($input) =  $ans_c\)
$PAR
d) \( (f - g)($input) =  $ans_d\)
END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
