DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a1 = random(1,9,1);
$b1 = random(2,4,1);
$a2 = random(2,6,1);
$b2 = random(2,4,1);

$f = Formula("$a1 x + $b1");
$g = Formula("$a2 x - $b2");

$input = random(-6,6,1);

######################################
#  Main text

BEGIN_TEXT
For \( f(x)= \{$f->TeX\} \) and \( g(x)= \{$g->TeX\} \), find:
$PAR
a) \( (f + g)(x) = \) \{ans_rule(20) \}
$PAR
b) \( (f + g)($input) = \) \{ans_rule(20) \}
END_TEXT

######################################
#  Answers 

$showPartialCorrectAnswers = 1;

$a = $a1 + $a2;
$b = $b1 - $b2;
$ans_a = Compute("$a x + $b")->reduce;
ANS($ans_a->cmp);

$ans_b = $ans_a->eval(x=>$input);
ANS($ans_b->cmp);

######################################
#  Solution

$fPlusg = Compute($f + $g)->reduce;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$BR
a) \( (f + g)(x) = $fPlusg = $ans_a\)
$BR
b) \( (f + g)($input) = $ans_b\)
END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
