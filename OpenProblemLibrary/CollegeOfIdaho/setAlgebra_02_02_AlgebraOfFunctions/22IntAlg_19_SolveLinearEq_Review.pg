DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

$a = random(-4,-2,1);
$b = random(1,5,1);
do {$d=non_zero_random(-4,4,1);} while($d-$a==0 && $d!=1); 
$e =random(1,3,1);
do {
   $n = non_zero_random(-5,5,1);
   $c = ($d-$a)*$n + $a*$b + $d*$e;} while ($c==0);

######################################
#  Main text

BEGIN_TEXT
Solve for \(x\).
\[$a (x - $b) ? {$c} = $d (x + $e)\]
$PAR
\(x =\) \{ans_rule(10)\}
$BR
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

$ans = Real($n);
ANS($ans->cmp);

######################################


COMMENT('MathObject version');
ENDDOCUMENT();

