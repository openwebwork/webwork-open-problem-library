DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context("Numeric");

$a1 = random(2,9,1);
$b1 = non_zero_random(-4,4,1);
$a2 = random(2,6,1);
$b2 = random(2,4,1);

$f = Formula("$a1 x + $b1")->reduce;
$g = Formula("$a2 x - $b2");

$input = random(-6,6,1);

######################################
#  Main text

BEGIN_TEXT
For \( f(x)= \{$f->TeX\} \) and \( g(x)= \{$g->TeX\} \), find:
$PAR
a) \( (f - g)(x) = \) \{ans_rule(20) \}
$PAR
b) \( (f - g)($input) = \) \{ans_rule(20) \}
END_TEXT

######################################
#  Answers 

$a = $a1 - $a2;
$b = $b1 + $b2;
$ans_a = Compute("$a x + $b")->reduce;
ANS($ans_a->cmp);

Context("LimitedNumeric");  #Should this be relaxed?

$ans_b = $ans_a->eval(x=>$input);
ANS($ans_b->cmp);

######################################
#  Solution

$fMinusg = Compute($f - $g)->reduce;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$BR
a) \( (f - g)(x) = $fMinusg = $ans_a\)
$BR
b) \( (f - g)($input) = $ans_b\)
END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
