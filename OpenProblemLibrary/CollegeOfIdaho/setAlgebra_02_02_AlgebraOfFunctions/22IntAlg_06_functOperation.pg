DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context("Numeric");

$a1 = random(1,5,2);
$a2 = non_zero_random(-6,6,1);

$f = Formula("1/(x - $a1)");
$g = Formula("x + $a2")->reduce;

do {$input = non_zero_random(-4,4,1);} while ($input==$a1);  

######################################
#  Main text

BEGIN_TEXT
For \( \displaystyle f(x)=  \{$f->TeX\} \) and \( g(x)= \{$g->TeX\} \), find:
$PAR
a) \( (f + g)(x) = \) \{ans_rule(20) \}
$PAR
b) \( (f + g)($input) = \) \{ans_rule(20) \}
END_TEXT

######################################
#  Answers 

$ans_a = ($f+$g)->reduce;
ANS($ans_a->cmp);

Context("LimitedNumeric");  #Should this be relaxed?

$ans_b = $ans_a->eval(x=>$input);
ANS($ans_b->cmp);

$showPartialCorrectAnswers = 1;

######################################
#  Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$BR
a) \( (f + g)(x) = $ans_a\)
$BR
b) \( (f + g)($input) = $ans_b\)
END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
