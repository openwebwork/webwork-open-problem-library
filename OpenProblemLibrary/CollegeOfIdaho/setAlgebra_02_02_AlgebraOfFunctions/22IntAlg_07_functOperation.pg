DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context("Numeric");
Context()->variables->are(t=>'Real');

$a1 = random(1,6,1);
$a2 = random(1,5,2);
if ($a1 == $a2) {$a1 = $a1 + 1;}

$f = Formula("t - $a1");
$g = Formula("t - $a2");

do {$input = non_zero_random(-4,4,1);} while ($input==$a2);  

######################################
#  Main text

BEGIN_TEXT
For \( f(t)=  \{$f->TeX\}\) and \( g(t)=  \{$g->TeX\}\), find:
$PAR
a) \( \displaystyle \left(\frac{f}{g}\right)(t) = \) \{ans_rule(20) \}
$PAR
b) \(  \displaystyle \left(\frac{f}{g}\right)($input) = \) \{ans_rule(20) \}
END_TEXT

######################################
#  Answers 

$showPartialCorrectAnswers = 1;

$ans_a = ($f/$g)->reduce;
ANS($ans_a->cmp);

$ans_b = $ans_a->eval(t=>$input);
ANS($ans_b->cmp);

######################################
#  Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$BR
a) \(\displaystyle \left(\frac{f}{g}\right)(t) = $ans_a\)
$BR
b) \(\displaystyle \left(\frac{f}{g}\right)($input) = $ans_b\)
END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
