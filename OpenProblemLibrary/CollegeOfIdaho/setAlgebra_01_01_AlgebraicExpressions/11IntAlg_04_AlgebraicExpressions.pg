##DESCRIPTION
##  Plug numbers into an algebraic expression
## 
##ENDDESCRIPTION
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Evaluating expressions)
## Institution(The College of Idaho)
## Author(RA Cruz)
## MLT(Simple_plug_in_numbers)
## Level(1)
## MO(1)
## TitleText1('Essentials of Intermediate Algebra')
## AuthorText1('Blitzer')
## EditionText1('1')
## Section1('1.1')
## Problem1('')
## KEYWORDS('real numbers','algebraic expressions')
## Date: 2007/08  updated 2013/10 --rac


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context()->variables->add(y=>'Real');

do {$a = random(1,9,1);
    $b = non_zero_random(-9,9,1);
    $x_a = random(2,10,1);} while ($a + $b * $x_a<=0);
$f = Formula("$a + $b x")->reduce;

do {$c = random(1,9,1);
    $d = random(1,9,1);
    $x_b = random(2,9,1);
    $y_b = random(2,9,1);} while ($c * $x_b - $d * $y_b<=0);

$g = Formula("$c x - $d y")->reduce;

######################################
#  Main text

BEGIN_TEXT
Evaluate each algebraic expression for the given value(s):

$PAR
a) \( \{$f->TeX\} \), for \( x = $x_a \)
$BR
Answer:  \{ ans_rule(20) \} 
$PAR
b) \( \{$g->TeX\} \), for \( x = $x_b \) and \( y = $y_b \)
$BR
Answer:  \{ ans_rule(20) \} 
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

Context("LimitedNumeric");

$ans_a=$f->substitute(x=>$x_a)->reduce;
ANS(Compute($ans_a)->cmp);

$ans_b=$g->substitute(x=>$x_b,y=>$y_b)->reduce;
ANS(Compute($ans_b)->cmp);

######################################
# Solution

Context()->texStrings;
BEGIN_SOLUTION
$BR
a) \($ans_a\)
$BR
b) \( $ans_b\)
END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
