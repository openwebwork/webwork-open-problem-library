##DESCRIPTION
## Asks for the algebraic expression for an English phrase
## 
##ENDDESCRIPTION
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Algebraic expressions)
## Institution(The College of Idaho)
## Author(RA Cruz)
## MLT(English_to_expression)
## MLTleader(1)
## Level(2)
## MO(1)
## TitleText1('Essentials of Intermediate Algebra')
## AuthorText1('Blitzer')
## EditionText1('1')
## Section1('1.1')
## Problem1('')
## KEYWORDS('real numbers','algebraic expressions')
## Date: 2007/08  updated 2013/10 --rac


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@num = ('One','Two','Three','Four','Five','Six','Seven','Eight','Nine');
$a = random(1,9,1);
@moreORless = ("more","less");
@f = ("x + $a","x - $a");

$b = random(1,9,1);
@decORinc = ("decreased","increased");
@g = ("$b - x", "$b + x");
$choose = random(0,1,1);

######################################
#  Main text

BEGIN_TEXT
Write each English phrase as an algebraic expression.  Let \(x\)
represent the number.

$PAR
a) $num[$a-1] $moreORless[$choose] than a number
$BR
Answer:  \{ ans_rule(20) \} 
$PAR
b) $num[$b-1] $decORinc[$choose] by a number
$BR
Answer:  \{ ans_rule(20) \} 
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

$ans_a=Formula($f[$choose]);
ANS($ans_a->cmp);

$ans_b=Formula($g[$choose]);
ANS($ans_b->cmp);

######################################
# Solution
Context()->texStrings;
BEGIN_SOLUTION
$BR
a) \($ans_a\)
$BR
b) \($ans_b\)

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
