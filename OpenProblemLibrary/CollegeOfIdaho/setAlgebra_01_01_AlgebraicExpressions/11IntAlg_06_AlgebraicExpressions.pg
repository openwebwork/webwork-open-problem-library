##DESCRIPTION
##  Plug numbers into an algebraic expression
## 
##ENDDESCRIPTION
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Evaluating expressions)
## Institution(The College of Idaho)
## Author(RA Cruz)
## Level(2)
## MO(1)
## TitleText1('Essentials of Intermediate Algebra')
## AuthorText1('Blitzer')
## EditionText1('1')
## Section1('1.1')
## Problem1('')
## KEYWORDS('real numbers','algebraic expressions')
## Date: 2007/08  updated 2013/10 --rac

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context()->variables->add(y=>'Real');

$a = random(2,6,1);
$b = random(2,5,1);
$c = random(2,6,1);
$x_a = $c + random(2,3,1);;
$f = Formula("$a + $b(x - $c)^3")->reduce;

do {$d = random(2,4,1);
    $y_b = random(2,4,1);
    $x_b = $y_b+random(4,6,1);} while ($x_b**2 + $d*$y_b < $d*$x_b);
$g = Formula("x^2 - $d(x - y)")->reduce;

######################################
#  Main text

BEGIN_TEXT
Evaluate each algebraic expression for the given value(s):

$PAR
a) \( \{$f->TeX\} \), for \( x = $x_a \)
$BR
Answer:  \{ ans_rule(20) \} 
$PAR
b) \( \{$g->TeX\} \), for \( x = $x_b \) and \( y = $y_b \)
$BR
Answer:  \{ ans_rule(20) \} 
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

Context("LimitedNumeric");

$ans_a=Compute($f->substitute(x=>$x_a))->reduce;
ANS($ans_a->cmp);

$ans_b=Compute($g->substitute(x=>$x_b,y=>$y_b))->reduce;
ANS($ans_b->cmp);

######################################
# Solution

Context()->texStrings;
BEGIN_SOLUTION
$BR
a) \($ans_a\)
$BR
b) \($ans_b\)
END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');
ENDDOCUMENT();
