##DESCRIPTION
## Asks for the algebraic expression for an English phrase
## 
##ENDDESCRIPTION
## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Algebraic expressions)
## Institution(The College of Idaho)
## Author(RA Cruz)
## MLT(English_to_expression)
## Level(2)
## MO(1)
## TitleText1('Essentials of Intermediate Algebra')
## AuthorText1('Blitzer')
## EditionText1('1')
## Section1('1.1')
## Problem1('')
## KEYWORDS('real numbers','algebraic expressions')
## Date: 2007/08  updated 2013/10 --rac

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@num1 = ('Twice','Three','Four','Five','Six','Seven','Eight','Nine','Ten');
@num2 = ('twice','three times','four times','five times','six times','seven times','eight times','nine times');

$a = random(2,10,1);
$phrase = $num1[$a-2];
if ($a>2){$phrase = $phrase . " times";};

$b = random(3,10,1);
$c = random(2,9,1);
@moreORless = ("more","less");
$choose = random(0,1,1);
@f = ("$c x + $b","$c x - $b");

######################################
#  Main text

BEGIN_TEXT
Write each English phrase as an algebraic expression.  Let \(x\)
represent the number.

$PAR
a) $phrase a number
$BR
Answer:  \{ ans_rule(20) \} 
$PAR
b) $num1[$b-2] $moreORless[$choose] than $num2[$c-2] a number
$BR
Answer:  \{ ans_rule(20) \}  
END_TEXT

######################################
#  Answers

$showPartialCorrectAnswers = 1;

$ans_a=Formula("$a x");
ANS($ans_a->cmp);

$ans_b=Formula($f[$choose]);
ANS($ans_b->cmp);

######################################
# Solution

Context()->texStrings;
BEGIN_SOLUTION
$BR
a) \($ans_a\)
$BR
b) \($ans_b\)
END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
