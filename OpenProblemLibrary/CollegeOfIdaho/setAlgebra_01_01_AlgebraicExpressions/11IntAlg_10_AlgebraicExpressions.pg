);

TEXT(beginproblem());

######################################
#  Setup

$a_1 = random(-5,5,1);      #Less than
$a_2 = $a_1 + non_zero_random(-5,5,1);
$TorF_a = "T";
if ($a_1>=$a_2) {$TorF_a = "F";};

$b_1 = random(-9,9,1);      #Less or equal to
$b_2 = random(-9,9,1);
$TorF_b = "T";
if ($b_1>$b_2) {$TorF_b = "F";};

$c_1 = random(-5,5,1);      #Greater than
$c_2 = $a_1 + non_zero_random(-5,5,1);
$TorF_c = "T";
if ($c_1<=$c_2) {$TorF_c = "F";};

$d_1 = random(-9,9,1);      #Greater or equal to
$d_2 = random(-9,9,1);
$TorF_d = "T";
if ($d_1<$d_2) {$TorF_d = "F";};

$tf = new_pop_up_select_list();
$tf -> qa (
          "\( $a_1 < $a_2 \)", 
          "$TorF_a",
          "\( $b_1 \le $b_2 \)",
          "$TorF_b",
          "\( $c_1 > $c_2 \)",
          "$TorF_c",
          "\( $d_1 \ge $d_2 \)",
          "$TorF_d"
      );  
$tf ->choose(4);  

######################################
