loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(4,80,4);

BEGIN_TEXT
The partial fraction decomposition of
\( \frac{$a}{x^2-4}\)
can be written in the form of
\( \frac{f(x)}{x-2} +\frac{g(x)}{x+2},\) where
$BR
\(f(x)=\) \{ans_rule(10) \},
$BR
\(g(x)=\) \{ans_rule(10) \}.
$BR
END_TEXT

$ans1 = $a/4;
$ans2 = -$a/4;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

