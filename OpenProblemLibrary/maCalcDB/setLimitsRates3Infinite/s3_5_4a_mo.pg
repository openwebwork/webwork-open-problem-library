##DESCRIPTION
##  Evaluate an infinite limit of a fraction of two polynomials
##ENDDESCRIPTION

## tsuda tagged and PAID on 2-20-2004

## DBsubject(Calculus - single variable)
## DBchapter(Limits and continuity)
## DBsection(Limits at infinity, horizontal and oblique asymptotes)
## Date(6/3/2002)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('6')
## Section1('2.6')
## Problem1('36')
## KEYWORDS('limits', 'infinite' )

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",         # used to display problem source button
   "PGcourse.pl",      # Customization file for the course
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#


$a1 = random(2,11,1);
$b1 = random(2,11,1);
$c1 = random(2,11,1);
$d1 = random(2,11,1);
$e1 = random(2,11,1);
$f1 = random(2,11,1);

$func = Compute(" ($a1 x^3 - $b1 x^2 -$c1 x  )/( $d1 - $e1 x - $f1 x^3  ) ")->reduce;
##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Find the horizontal limit(s) of the following function:$PAR

\( \displaystyle  f(x) = $func  \) $PAR
\{ ans_rule(35) \} 
$PAR
$BITALIC	Separate answers by a comma.
$EITALIC

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

$ans = -$a1/$f1;
ANS(List($ans,$ans)->cmp );


;

;
ENDDOCUMENT();
