DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric");

$a1 = random(2,7,1);
$b1 = random(2,8,1);
$c1 = random(2,7,1);
$x1 = random(1,5,1);

$f = Formula("$a1 + $b1/x +$c1/x^2");
$dfdx = Formula(" - $b1/x^2 - 2*$c1/x^3");
$dfdx_atx1 = $dfdx->eval(x=>$x1);
$df2dx2 = Formula(" 2*$b1/x^3 + 6*$c1/x^4");
$df2dx2_atx1 = $df2dx2->eval (x=>$x1);

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

Let \( f(x) = {\displaystyle $f} \).  
$BR$BR
\( f'( x ) = \) \{ans_rule(48) \}
$BR$BR 
\( f'( $x1 ) = \) \{ans_rule(48) \}
$BR$BR
\( f''( x ) = \) \{ans_rule(48) \}
$BR$BR
\( f''( $x1 ) = \) \{ans_rule(48) \}
$BR

END_TEXT
Context()->normalStrings;

##############################################################
#
# Answers
#
#

ANS($dfdx->cmp() );

ANS($dfdx_atx1->cmp() );

ANS($df2dx2->cmp() );

ANS($df2dx2_atx1->cmp() );

;

ENDDOCUMENT();
