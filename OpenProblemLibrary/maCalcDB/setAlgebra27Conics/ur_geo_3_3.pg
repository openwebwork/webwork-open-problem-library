DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$c = random(1,5,1);
$b = random(1,9,1);
$a = 4*$c;
$d = 2*$a;
$e = 4*$b;
$m = random(1,9,1);
$p = random(1,5,1);
$r = 2*$m;
$n = 4 *$p;
$f = random(1,9,1);

$ans1 = $m;
$ans2 = $b;
$ans3 = $m+$c;
$ans4 = $m-$c;
$ans5 = 0;
$ans6 = $p;
$ans7 = $f;
$ans8 = -$a;
$ans9 = $c;

BEGIN_TEXT
Find the vertex, focus, and directrix for the following functions.
$PAR
(a) $PAR
\( ( y - $b )^{2} = $a ( x - $m) \) 
$PAR 
vertex : ( \{ans_rule(5) \} , \{ans_rule(5) \} )$PAR
focus : ( \{ans_rule(5) \} , \{ans_rule(5) \} )$PAR
directrix  \( x \) = \{ans_rule(5) \}
$PAR
(b) $PAR
\( y^{2} - $r y = $n x - $m^{2} \)
$PAR
vertex : ( \{ans_rule(5) \} , \{ans_rule(5) \} )$PAR
focus : ( \{ans_rule(5) \} , \{ans_rule(5) \} )$PAR
directrix \( x \) = \{ans_rule(5) \}
$PAR
(c) $PAR
\( ( x - $f )^{2} = $n ( y - $c ) \) 
$PAR
vertex : ( \{ans_rule(5) \} , \{ans_rule(5) \} )$PAR
focus : ( \{ans_rule(5) \} , \{ans_rule(5) \} ) $PAR
directrix \( y \) = \{ans_rule(5) \}
$PAR
(d) $PAR
\( x^{2} + $d x = 4 y - $e \)
$PAR
vertex : ( \{ans_rule(5) \} , \{ans_rule(5) \} )$PAR
focus : ( \{ans_rule(5) \} , \{ans_rule(5) \} )$PAR
directrix \( y \) = \{ans_rule(5) \}
END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans2));
ANS(num_cmp($ans4));
ANS(num_cmp($ans5));
ANS(num_cmp($ans1));
ANS(num_cmp($ans6));
ANS(num_cmp($ans1));
ANS(num_cmp(-$ans6));
ANS(num_cmp($ans7));
ANS(num_cmp($ans9));
ANS(num_cmp($ans7));
ANS(num_cmp($ans9+$ans6));
ANS(num_cmp($ans9-$ans6));
ANS(num_cmp($ans8));
ANS(num_cmp($ans2-4*$ans9*$ans9));
ANS(num_cmp($ans8));
ANS(num_cmp($ans2-4*$ans9*$ans9+1));
ANS(num_cmp($ans2-4*$ans9*$ans9-1));



