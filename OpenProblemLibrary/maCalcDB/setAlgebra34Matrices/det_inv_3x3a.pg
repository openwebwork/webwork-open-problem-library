DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a11=random(-5,5,1);
$a13=random(-5,5,1);
$a22=random(-5,5,1);
$a23=random(-5,5,1);
$a31=random(-5,5,1);
$a33=random(-5,5,1);

BEGIN_TEXT
Consider the matrix
\[
\left[\begin{array}{rrr}
        $a11 & 0    & $a13 \\
        0    & $a22 & $a23 \\
        $a31 & 0    & $a33 \\
\end{array}\right]
\]
$BR
(a) The determinant of the matrix is: \{ans_rule(25) \}
$BR
$BR
(b) Does the matrix have an inverse?  \{pop_up_list(['?', 'yes', 'no']) \}
END_TEXT

$ans1 = $a11*$a22*$a33-$a31*$a22*$a13;
if ($ans1 == 0) {
$ans2 = "No";
}
else {
$ans2 = "Yes";
};

ANS(num_cmp($ans1));
ANS(str_cmp($ans2));

ENDDOCUMENT();    

