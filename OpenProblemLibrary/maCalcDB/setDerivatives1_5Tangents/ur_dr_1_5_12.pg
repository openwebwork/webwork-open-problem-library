## MO(1)
#  Calculate points where a cubic polynomial has a tangent line parallel to a given line.
#  Answer is an integer.
#ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
Context("Numeric");
$showPartialCorrectAnswers=1;

my $i;

do { $r1= random(-4,4,1);
     $r2= random(-4,4,1);
} until ($r1 != $r2);
$d = random(1,5,1);
$c = random(-4,4,1);
@a=();
$a[3] = 2*$d;
$a[2] = -3*($r1+$r2)*$d;
$a[1] = 6*$r1*$r2*$d;
$a[0] = 6*$c*$d;
$m=random(-2,2,1);
$b=random(-2,2,.3);

$f = Compute("$a[3] x^3 + $a[2] x^2 + ($a[1]+$m)  x + $a[0]")->reduce;
$l = Compute("$m x + $b")->reduce;

$ans = List("$r1, $r2");

# Choose the questions to be presented for this problem

# Present the text.
Context()->texStrings;
BEGIN_TEXT

For what values of x is the tangent line of the graph of
\[ f(x)= $f\]
parallel to the line \(y=$l \)?
$PAR
(If there are multiple values then separate them with commas.)$PAR
\(x = \) \{ans_rule(30)\}

END_TEXT
Context()->normalStrings;

ANS($ans->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
