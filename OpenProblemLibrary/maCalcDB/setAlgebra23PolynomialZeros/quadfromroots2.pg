TEXT(beginproblem());

#$showPartialCorrectAnswers = 1;

$a = non_zero_random(-20,20);
do {$b = random(1,20);} until (($g=gcd($a,$b))!=$b);

#$g = gcd($a,$b);
$a /= $g; $b /= $g;

$c = non_zero_random(-10,10);
        
BEGIN_TEXT
        $PAR
Enter a quadratic polynomial which has roots at $a/$b and $c.
$BR
\{ ans_rule(30) \}
END_TEXT

ANS(fun_cmp("a*(x-$a/$b)*(x-$c)", params=>['a']));



