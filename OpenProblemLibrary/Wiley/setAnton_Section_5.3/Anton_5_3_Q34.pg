DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real');
$a=random(1,10,1);
$b=random(1,10,1)*random(-1,1,2);
$u=Formula("$a*e**(x)+$b*e**(-x)")->reduce;
$fu=Formula("u")->reduce;
$f=$fu->substitute(u=>$u);
$g=Formula("$a*e**(x)-$b*e**(-x)")->reduce;
$df=$g/$f;
$Fu=Formula("ln|u|");
$F=$Fu->substitute(u=>$u);
$ans=Compute("$F");

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral using an appropriate substitution.
$PAR
\( \displaystyle \int $df \;dx\) \(=\) \{ans_rule(40) \} \(+\) \(C\)
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp(upToConstant=>1));

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \( du = ($g)\; dx\) and hence;
$PAR
\[ \displaystyle \int $df \;dx =  \int \frac{du}{$fu}=  $Fu+C= $F+C\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
