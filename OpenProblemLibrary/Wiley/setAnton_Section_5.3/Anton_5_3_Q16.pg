DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
# f(u(x))= sqrt(u)
# u(x)= $b+x^$
Context("Numeric");
Context()->variables->add(u=>'Real');
$a=random(2,8,1);
$b=random(1,12,1)*random(-1,1,2);
$u=Formula("$b+x**($a)")->reduce;
$fu=Formula("sqrt(u)")->reduce;
$f=$fu->substitute(u=>$u);
$g=Formula("x**($a-1)")->reduce;
$df=$g*$f;
$Fu=Formula("sqrt(u**3)");
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$A=Compute("1/$a");
$B=Compute("2/3");
$C=Compute("2/($a*3)");

Context("Numeric");
$ans=Compute("$C*$F");
if ($b<0){
  $lowerLim = (-$b)**(1/$a)+0.1;  $upperLim=$lowerLim+4;
  $ans->{limits}=[$lowerLim, $upperLim];
}
if($C==1){$C=""}
if($C==-1){$C="-"}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral using an appropriate substitution.
$PAR
\( \displaystyle \int $df \;dx\) \(=\) \{ans_rule(40) \} \(+\) \(C\)
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;
Context()->normalStrings;
ANS($ans->cmp(upToConstant=>1));

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($A du = $g dx\) and hence;
$PAR
\[ \displaystyle \int $df \;dx = $A \int $fu \;du= $A\cdot$B$Fu+C=$C $F+C\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
