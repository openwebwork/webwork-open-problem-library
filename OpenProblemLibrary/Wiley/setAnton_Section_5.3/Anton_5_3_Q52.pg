DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real',y=>'Real');
$a=random(2,6,1);
$b=random(2,10,1)*random(-1,1,2);
$u=Formula("sqrt($a*y+$b)")->reduce;
$fu=Formula("e**(u)")->reduce;
$f=$fu->substitute(u=>$u);
$g=$u;
$df=$f/$g;
$Fu=Formula("e**(u)");
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$A=Compute("2/$a");if($A==1){$Ad=""}else{if($A==-1){$Ad="-"}else{$Ad=$A}}
$B=Compute("");
$C=Compute("2/$a");
Context("Numeric");
Context()->variables->add(u=>'Real',y=>'Real');
$ll = -$b/$a;
$ans=Compute("$C*$F");
$ans->{limits} = [$ll, $ll+4];

if($C==1){$C=""}
if($C==-1){$C="-"}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral using an appropriate substitution.
$PAR
\( \displaystyle \int $df \;dy\) \(=\) \{ans_rule(40) \} \(+\) \(C\)
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

Context()->variables->set(y=>{limits=>[(-$b+1)/$a,(-$b+9)/$a]});
ANS($ans->cmp(upToConstant=>1));

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($Ad du =  \frac{dy}{$g}\) and hence;
$PAR
\[ \displaystyle \int $df \;dy = $Ad \int $fu \;du= $Ad $Fu+C=$C $F+C\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
