DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.

rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real',t=>'Real');

$a=random(2,9,1);
$u=Formula("$a*sin(t)")->reduce;
$fu=Formula("sin(u)")->reduce;
$f=$fu->substitute(u=>$u);
$g=Formula("cos(t)")->reduce;
$df=$f*$g;
$Fu=Formula("-cos(u)")->reduce;
$F=$Fu->substitute(u=>$u);
$F2=Formula("-$F")->reduce;
Context("Fraction");
$A=Compute("1/$a");
$C=Compute("-1/$a");
Context("Numeric");
Context()->variables->add(u=>'Real',t=>'Real');
$ans=Compute("$C*$F2");

if($C==1){$C=""}
if($C==-1){$C="-"}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral using an appropriate substitution.
$PAR
\( \displaystyle \int $df \;dt\) \(=\) \{ans_rule(40) \} \(+\) \(C\)
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp(upToConstant=>1));

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($A\; du = $g dt\) and hence;
$PAR
\[ \displaystyle \int $df \;dt = $A \int $fu \;du= $A\cdot$B$Fu+C=$C $F2+C\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
