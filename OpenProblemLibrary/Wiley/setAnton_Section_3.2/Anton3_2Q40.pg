DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.

rand_button();

TEXT(beginproblem());

###################################
# Setup
     

$a=random(-9,10,1);
if($a==0){$a=-10}
$b=random(1,5,1);
$xp=Formula("1/x**$b")->reduce;
$f1="\log_{$xp}(e^{$a})";

$f2=Formula("ln(e**($a))/ln(1/x**$b)")->reduce;
$f3=Formula("-$a/($b*ln(x))")->reduce;
$df1=Formula("($a/($b*(ln(x))**2))*(1/x)")->reduce;
$c=$a/$b;
if($a/$b==int($a/$b)){
  $ans=Formula("$c/(x*(ln(x))**2)")->reduce;
}
else{($n,$d)=reduce($a,$b);
  $ans=Formula("$n/($d*x*(ln(x))**2)")->reduce;
}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the following.$PAR
 \(\frac{d}{dx}($f1)=\)  \{ans_rule(20) \}
END_TEXT
###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[\frac{d}{dx}[$f1]=\frac{d}{dx}[$f2]=\frac{d}{dx}[$f3]\]
\[=$df1=$ans\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
