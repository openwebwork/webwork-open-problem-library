DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.

rand_button();
TEXT(beginproblem());

###################################
# Setup
     

$b=random(1,15,2);
$c=random(1,5,1);

$A=$c;
$f=Formula("ln($b+$c*sqrt(x))")->reduce;
$df1=Formula("1/($b+$c*sqrt(x))")->reduce;
$df2=Formula("$c/(2*sqrt(x))")->reduce;
if($A/2==int($A/2)){$B=$A/2;$C=1}
else{$B=$A;$C=2}
$ans=Formula("$B/($C*sqrt(x)*($b+$c*sqrt(x)))")->reduce;
$ans->{limits} = [0,5];
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find \(\frac{dy}{dx}\) when \[y=$f\]
 
$PAR
\(\frac{dy}{dx}=\) \{ans_rule(20) \}
END_TEXT
###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
Differentiating gives  \[\frac{dy}{dx}=\left($df1\right)\left($df2\right)=$ans\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
