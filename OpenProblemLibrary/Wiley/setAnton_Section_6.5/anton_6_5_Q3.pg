#***************************************************************
#   Initialization - Load standard PG and MathObjects macros   
#***************************************************************
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
#
# Set Up - Set up variable context and formulation of problem
#
# allow the student to change the seed for this problem.

rand_button();
Context("Numeric");
#***********************************

#***********************************
$a=random(3,6,1); $a2=2*$a;$as=$a**2;
$B=random(1,$a-1,1); 
$C1=$a2;
$C2=($B)*4*$a;
$xA=Compute("sqrt($a-$B)");

$f=Formula("sqrt($as-x^2)")->reduce;
$df=Formula("-x/$f")->reduce;
$h="";
$H=Formula("x")->reduce;
$g1=Formula("sqrt($as-x^2)")->string;
$ans=Compute("$C2*pi");
#***********************
#   Plot the function
#***********************

$grminX=Compute("-$a");
$grmaxX=Compute("$a");

$xgrid=Compute("($grmaxX-$grminX)");
$grmaxY=Compute("$a+2");
$grminY=Compute("-2");

$ygrid=Compute("int(($grmaxY-$grminY)/4)*2");
$f1minX= $grminX;
$f1maxX = $grmaxX;

$Bv=Compute("sqrt($as-$B**2)");
$gr = init_graph($grminX,$grminY,$grmaxX,$grmaxY,
                 'axes'=>[0,0],'ticks'=>[$xgrid,$ygrid],'grid' =>[$xgrid,$ygrid],'size'=>[500,500]);

plot_functions($gr, "$g1 for x in <$f1maxX,$f1maxX> using color:blue and weight:4");

plot_functions($gr, "$g1 for x in <-$B,$B> using color:red and weight:4");
 
 
 # add a label

#******************

# *********************
#   Problem Statement
# *********************

TEXT(beginproblem());
#
# Strings in Tex form (formula)
#
Context()->texStrings;
BEGIN_TEXT
$PAR
Find the area of the surface generated by revolving the given curve about the \(x\)-axis. 
$BR
$PAR
\(y = $f,\; -$B\leq x\leq $B\\)
$PAR

Surface Area  \(=\) \{ans_rule(20) \}



END_TEXT

Context()->normalStrings;
#
# Expect strings in standard form
#
# *******************************
#   Answer and Solution section
# *******************************
#
# Check student solution
#
ANS($ans->cmp());
Context()->texStrings;
#***************************
#  Explanation of solution  
#***************************
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
With \(f(x)=$f,\;a=-$B,\;b=$B\)$PAR
Surface Area \[=\int_{a}^{b} 2\pi f(x) \sqrt{1+[f'(x)]^2}\;dx=2\pi\int_{-$B}^{$B}  $f \sqrt{1+\left[$df\right]^2}\;dx=$C1\pi\int_{-$B}^{$B}  $h \;dx=$C1\left[$H\right]_{-$B}^{$B}=$C2\pi\]

The surface area is \($C2\pi\).

END_SOLUTION
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BCENTER
$PAR
(click on image to enlarge) 
$BR
\{ image(insertGraph($gr,tex_size=>300,height=>100,width=>100)) \}
$BR


$ECENTER
END_SOLUTION
Context()->normalStrings;
ENDDOCUMENT();
