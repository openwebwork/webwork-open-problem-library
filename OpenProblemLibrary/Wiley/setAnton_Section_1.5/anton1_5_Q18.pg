DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "littleneck.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

rand_button();
TEXT(beginproblem());

###################################
# Setup  
$A=random(1,6,1);
$b=random(1,15,1);
$d=random(1,10,1);
$s=random(-1,1,2);
$a=$s*$A;
$c=random(-1,1,2)*random(1,9,1);
$x=random(-7,7,1);
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$f=Formula("$a/(x-$b)+($c*x)/(x+$d)")->reduce;

$ans1=List("-$d,$b");
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find values of \(x\), if any, at which \[f(x)=$f\] is not continuous (enter as comma separated list, smallest to largest). 
$PAR
\(x=\) \{ans_rule(20) \} 
$PAR
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans1->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[f(x)=$f\] is undefined when either of the denominators are zero, \(x=-$d,x=$b\).
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
