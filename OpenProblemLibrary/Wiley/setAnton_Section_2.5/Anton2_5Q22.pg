DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
$a=random(1,20,1);
$b=random(1,25,1);
$c=2*$a;
$d=2*$c;
$e=$c-$b;
##
## f(x)= $a (x^2 +$d) cot(x) / ($b-cot(x))
##
$f1a= Formula("$a*x**2 *cos(x)");
$f1b= Formula("$b*sin(x)");
$f=$f1a+$f1b;
$df1=$f->D->reduce;
$f2a= Formula("$c*x*cos(x)");
$f2b= Formula("$a*x**2*sin(x)");
$f2c= Formula("$b*cos(x)");
$f2=$f2a-$f2b+$f2c;
$df2=$f2->D->reduce;
$f3a= Formula("$c*cos(x)");
$f3b= Formula("$d*x*sin(x)");
$f3c= Formula("$a*x**2*cos(x)");
$f3d= Formula("$b*sin(x)");
$f3=$f3a-$f3b-$f3c-$f3d;
$ans=$f3;

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find \(\frac{d^2y}{dx^2}\) for \[y=$f\]
$PAR 
\(\frac{d^2y}{dx^2} =\) \{ans_rule(40) \}
END_TEXT
###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[y'(x)=\frac{dy}{dx}=\frac{d}{dx}($f)=$df1\]\[\frac{dy}{dx}=$f2\]
\[y''(x)=\frac{d^2y}{dx^2}=\frac{d}{dx}(y'(x))=\frac{d}{dx}($f2)=$df2\]
\[\frac{d^2y}{dx^2}=$f3\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
