DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl","littleneck.pl",            
  "MathObjects.pl", "contextFraction.pl"         
);
# allow the student to change the seed for this problem.
rand_button();
TEXT(beginproblem());

###################################
# Setup
$a=random(2,12,1);
$b=random(2,12,1);
if($a==$b){$b=$a+random(-1,1,2)}



$f1=Formula("sin(x*$a)")->reduce;

$f2=Formula("sin(x*$b)")->reduce;
$f=$f1/$f2;
$F=Formula("($f1/($a*x))/($f2/($b*x))")->reduce;
Context("Fraction");
$ans=Compute("$a/$b")->reduce;
$ansd=$ans;
Context("Numeric");


###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
$PAR
Notes: Enter "DNE" if limit Does Not Exist.$PAR
\(\displaystyle \lim_{x\to 0} $f\)
 = \{ans_rule(20) \} 
$PAR
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\(\displaystyle \lim_{x\to 0}  $f=$ansd\lim_{x\to  0}  $F=$ansd\)
$PAR
$extra
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();