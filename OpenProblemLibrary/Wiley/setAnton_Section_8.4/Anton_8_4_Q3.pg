DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.

rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(C=>'Real');
$a=random(2,10,1);
$p=Formula("$a")->reduce;
$P=Formula("$a*x")->reduce;
$q=Formula("cos(e^($a*x))")->reduce;
$mu=Formula("e^($P)")->reduce;
$Mu=Formula("e^(-$P)")->reduce;
$mq=Formula("$q*e^($P)")->reduce;
$mp=Formula("$p*e^($P)")->reduce;

Context("Fraction");
Context()->variables->add(C=>'Real');
Context("Numeric");
Context()->variables->add(C=>'Real');
$Mq=Formula("sin(e^($P))/$a+C")->reduce;
$ansd=Formula("(sin(e^($P))/$a+C)*$Mu")->reduce;

$ans=Compute("$ansd");
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Solve the differential equation by the method of integrating factors.
\[y'+$p y=$q\]
$PAR
\( \displaystyle y=\) \{ans_rule(40) \} Use "C" to represent any constant of integration.
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;
ANS($ans->cmp);

###################################
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\(p(x)=$p,\;q(x)=$q,\;\mu=$mu\)
$PAR
Multiplying the DE by \($mu\) gives

\[$mu y'+$mp y=$mq\]
integrating we get 
\[$mu y=\int $mq\; dx= $Mq\]
finally solving for \(y\) gives
\[y=$ansd\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
