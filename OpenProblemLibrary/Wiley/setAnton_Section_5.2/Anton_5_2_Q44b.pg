DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
# 
Context()->variables->add(t=>'Real',C=>'Real');

Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$a=non_zero_random(-9,9,1);
$na=-$a;
$C="\frac{$na}{\sqrt{2}}";
$f=Formula("sec^2(t)-$a*sin(t)")->reduce;
$F=Formula("tan(t)+$a*cos(t)")->reduce;

$ans=Compute("$F+$na/sqrt(2)");
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Solve the following Initial Value Problem.
$PAR

\( \displaystyle \frac{dy}{dt}=$f,\;y(\frac{\pi}{4})=1 \) 
$PAR\(y=\) \{ans_rule(40) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

$PAR
\[y=\displaystyle \int \left [$f \right] dt= $F+C\]

$BR
\[1=\tan(\frac{\pi}{4})+$a \cos(\frac{\pi}{4})+C\]\[C=$C\]
$BR
Hence, \[y=$F+$C\]

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
