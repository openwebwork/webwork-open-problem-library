(c) 
\{ image(insertGraph($Gc,tex_size=>300,height=>100,width=>100)) \} 
(d) 
\{ image(insertGraph($Gd,tex_size=>300,height=>100,width=>100)) \}
$PAR Select correct option from below.
\{ $ansPop->menu() \}

$ECENTER
END_TEXT

