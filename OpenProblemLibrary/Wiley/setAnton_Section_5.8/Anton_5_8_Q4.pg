DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
# 
Context("Fraction");
#Context()->variables->add(t=>'Real');
#
#Context()->reduction->set('(-x)+y'=>0);
#Context()->reduction->set('(-x)-y'=>0);
$r=random(-2,2,1);
$s=random($r+1,3,1);
$a=($r)**3;
$b=($s)**3;
$f="\sqrt[3]{x}";
$F="\frac{3\sqrt[3]{x^4}}{4}";
$A=($r)**4;
$B=($s)**4;
$D=$B-$A;

$C=Compute("$b-$a");
#Context("Fraction");
$c=Compute("1/$C");
$ans=Compute("3*$D/$C/4")->reduce;
#Context("Numeric");
if($c==1){$c=""}



###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the average value of the function \(f(x)=$f\) on the interval \([$a,$b]\).
$PAR
\( f_{\mathrm{ave}}\) \(=\) \{ans_rule(40) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

Context()->normalStrings;
$realans = Real($ans);  #so it will accept decimal answers too
ANS($realans->cmp());

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$PAR

\[ \displaystyle f_{\mathrm{ave}}=\frac{1}{$b-$a} \int^{$b}_{$a} $f \;dx = $c \left[$F\right]^{$b}_{$a}=$ans \]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
