DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
$a=random(1,5,1); $aa=a;
$sign="-";
$A=($a)**3;
$f="\sqrt[3]{\frac{$A}{x}}";

Context("Fraction");
$fa=Compute("-1/3");
if($a>0){
$fb=Compute("-4/3");}
else{
$fb=Compute("4/3");}
$g=Formula("$a*x^($fa)")->reduce;
$df1=Formula("$a*($fa)*x^($fb)")->reduce;
$g=Formula("$a*x^($fa)")->reduce;
Context("Numeric");

$df2="\sqrt[3]{\frac{$A}{x^4}}";
$ans=Compute("$df1")->with(limits=>[0,5]);
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
For \( f(x) = $f \), find \( f'(x) \).
$PAR
\( f'(x)  =\) \{ans_rule(20) \}
END_TEXT

###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR


\[ f'(x)=\frac{d}{dx}[f(x)]=\frac{d}{dx}\left($f\right)=\frac{d}{dx}\left($g\right)=$df1=$fa$df2\]

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
