DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.

rand_button();
TEXT(beginproblem());

###################################
# Setup
$pm1=random(-1,1,2);
$r=random(1,10,1);
$x0=$r**2;
$pm1=random(-1,1,2);
$a=$x0+$pm1;
if($a==0){$r=1;$x0=1;$pm1=1;$a=$x0+$pm1}
$denom=2*$r;
$f=Formula("$r+(x-$x0)/(2*$r)")->reduce;

if($pm1==-1){
  $num=$r*$denom-1;
  $ans=Compute("$num/$denom");
  $ansd1="$r-\frac{1}{$denom}";
}
else{
  $num=$r*$denom+1;
  $ans=Compute("$num/$denom");
  $ansd1="$r+\frac{1}{$denom}";
}

$ansd2="\frac{$num}{$denom}";

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Use an appropriate local linear approximation to estimate the value of the given quantity.
$PAR
\( \sqrt{$a}  \approx\) \{ans_rule(20) \}
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[\sqrt{x}\approx \sqrt{x_0}+\frac{1}{2\sqrt{x_0}}(x-x_0)\]
Picking the square \(x_0=$x0\) close to \($a\) we get
\[\sqrt{x}\approx $f\]
So that \[\sqrt{$a}\approx $ansd1=$ansd2\]

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
