DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
# 
Context()->variables->add(t=>'Real',C=>'Real');

Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$a=random(1,5,1);$b=random(-7,-2,1);
$f=Formula("$a+sin(t)")->reduce;
$F=Formula("$a*t-cos(t)")->reduce;
$C=$b+1;

$ans=Compute("$F+$C");
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
A particle moves along an \(\small{s}\)-axis, use the given information to find the position function of the particle.
$PAR
\[v(t)=$f,\; s(0)=$b\]
$PAR
$PAR\(\small{s(t)}=\) \{ans_rule(40) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

$PAR
\[s(t)=\displaystyle \int \left [$f \right] dt= $F+C\]

$BR
\[$b=-1+C\]\[C=$C\]
$BR
Hence, \[s(t)=$F+$C\]

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
