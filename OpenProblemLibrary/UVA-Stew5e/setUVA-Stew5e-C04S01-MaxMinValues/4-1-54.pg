DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

$a = random(3,7,2);
$b = $a+2;
$c = random(3,7,2);
$p1 = random(-4,-1,1);
$p2 = random(2,5,1);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

TEXT(EV2(<<EOT));
Find the
absolute maximum and absolute minimum values of  the function
\[  f(x) = $a x^$b - $b x^$a - $c  \]
on the interval \([$p1,$p2]\).
$BR
Enter -1000 for any absolute extrema that does not exist.
$BR
Absolute maximum = \{ans_rule(10)\}
$BR
$BR
Absolute minimum = \{ans_rule(10)\}

$BR
EOT

$ans1 = ($a)*((0)**$b) - ($b)*((0)**$a) - $c;
$ans2 = ($a)*((1)**$b) - ($b)*((1)**$a) - $c;
$ans3 = ($a)*((-1)**$b) - ($b)*((-1)**$a) - $c;
$ans4 = ($a)*(($p1)**$b) - ($b)*(($p1)**$a) - $c;
$ans5 = ($a)*(($p2)**$b) - ($b)*(($p2)**$a) - $c;

$ansmax = $ans1;
$ansmin = $ans1;

if ($ans2 > $ansmax)
{
    $ansmax = $ans2;
}

if ($ans3 > $ansmax)
{
    $ansmax = $ans3;
}
if ($ans4 > $ansmax)
{
    $ansmax = $ans4;
}
if ($ans5 > $ansmax)
{
    $ansmax = $ans5;
}


if ($ans2 < $ansmin)
{
    $ansmin = $ans2;
}

if ($ans3 < $ansmin)
{
    $ansmin = $ans3;
}
if ($ans4 < $ansmin)
{
    $ansmin = $ans4;
}
if ($ans5 < $ansmin)
{
    $ansmin = $ans5;
}


@answers = (num_cmp($ansmax), num_cmp($ansmin));

ANS(@answers);

ENDDOCUMENT();        # This should be the last executable line in the problem.
