DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1;


$a = random(3,7,1);
$a1 = random(1,3,1);
$a2 = random(1,3,1);
$c = $a +$a1;
$b = $c + $a2;
$answ = (($c-$a)**2/2 + ($b-$c)**2/2)/($b-$a);

TEXT(beginproblem());
BEGIN_TEXT
Find the mean value of the function \(f(x) = |$c - x|\)
on the closed interval \([$a, $b]\).
$BR
mean value =  \{ ans_rule()\}
$PAR
END_TEXT

ANS(num_cmp($answ));

