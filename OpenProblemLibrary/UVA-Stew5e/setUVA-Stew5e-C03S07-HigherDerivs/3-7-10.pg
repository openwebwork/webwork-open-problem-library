DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
Context("Numeric");
$showPartialCorrectAnswers = 1;

$a1 = random(2,5,1);
$b1 = random(2,8,1);
$c1 = random(2,4,1);
$x1 = random(1,5,1);

Context()->variables->are('r'=>"Real");
$deriv1f= Formula(" ($a1)*(1/2)*(r**(-1/2)) + ($b1)*(1/3)*(r**(-2/3))");
$deriv1 = Real(" ($a1)*(1/2)*($x1**(-1/2)) + ($b1)*(1/3)*($x1**(-2/3))");
$deriv2f= Formula(" ($a1/2)*(-1/2)*(r**(-3/2)) + ($b1/3)*(-2/3)*(r**(-5/3))");
$deriv2 = Real(" ($a1/2)*(-1/2)*($x1**(-3/2)) + ($b1/3)*(-2/3)*($x1**(-5/3))");

BEGIN_TEXT

Let \( f(r) = $a1 \sqrt{r} + $b1 \sqrt[3]{r}  \). $BR$BR
\( f'( r ) = \) \{ans_rule(20) \} $BR$BR
\( f'( $x1 ) = \) \{ans_rule(20) \}, $BR$BR
\( f''( r ) = \) \{ans_rule(20) \} $BR$BR
\( f''( $x1 ) = \) \{ans_rule(20) \}

END_TEXT

ANS($deriv1f->cmp);
ANS($deriv1->cmp);
ANS($deriv2f->cmp);
ANS($deriv2->cmp);

;

