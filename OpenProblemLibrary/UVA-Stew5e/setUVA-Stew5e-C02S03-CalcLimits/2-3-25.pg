DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",

  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,7,1);
$a2 = $a**2;

BEGIN_TEXT
Evaluate the limit:$BR
\( \displaystyle \lim_{ t \rightarrow 0 } \left(\frac{$a}{t \sqrt{$a2+t}}- \frac{1}{t}\right) = \) \{ans_rule(25) \}
\{ helpLink("limits") \}
END_TEXT

$twoa2 = 2*$a2;
$ans = Compute("-1/$twoa2");
ANS($ans->cmp());

