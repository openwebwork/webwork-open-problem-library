DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,7,1);
$c=$a**4;
$d=$a**2;
$b=2*$d*2*$a;

BEGIN_TEXT
Evaluate the limit:
\(\displaystyle \lim_{ x \rightarrow $d } \frac{x^2 - $c}{\sqrt{x} - $a} = \) \{ans_rule(25) \}
\{ AnswerFormatHelp("limits") \}
END_TEXT

Context("Numeric");
$ans = Compute($b);
ANS($ans->cmp());

