  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = random(2,8,1);
$c = random(2,8,1);

TEXT(EV2(<<EOT));
Find (in terms of the constant \(a\))
\[ \lim_{h\rightarrow 0} \frac{\sqrt{$b(a+h)} - \sqrt{$b a}}{h}. \]
$PAR
Limit = \{ans_rule(20) \}

EOT

@ans = (fun_cmp("0.5*sqrt($b/a)", vars=>"a"));
ANS(@ans);

