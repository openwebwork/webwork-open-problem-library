DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

Context("Numeric");

$a1 = non_zero_random(-8,9,2);
$b1 = random(2,9,1);
$c1 = non_zero_random(-8,9,2);
$d = random(1,3,1);
$f = random(4, 6, 1);
$func = Compute("$a1/(sqrt(x)) - $b1 x^(-2) + $c1* x")->reduce;
$df = $func->D;
$ans1 = $df->eval(x=>$d);
$ans2 = $df->eval(x=>$f);

Context()->texStrings;
BEGIN_TEXT
Suppose that
\( \displaystyle{f(x) =  $func}\).
Evaluate each of the following:
$BR
$BR
\( f'($d) \) = \{ans_rule(20) \}

$BR$BR

\( f'($f) \) = \{ans_rule(20) \}
END_TEXT

ANS($ans1->cmp);
ANS($ans2->cmp);


ENDDOCUMENT();
