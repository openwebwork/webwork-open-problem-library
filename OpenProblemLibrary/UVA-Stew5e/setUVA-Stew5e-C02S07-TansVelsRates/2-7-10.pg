loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "extraAnswerEvaluators.pl");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-8,8,1);
$b = non_zero_random(-8,8,1);


TEXT(EV2(<<EOT));
Find an equation of the line tangent to the graph of
\[
    y = \frac{$a x}{1-$b x}
\]
at the point (0,0).
$BR
$PAR
Answer: \(y = \) \{ans_rule(20)  \}
EOT

$ans ="$a*x";
ANS(fun_cmp($ans));

