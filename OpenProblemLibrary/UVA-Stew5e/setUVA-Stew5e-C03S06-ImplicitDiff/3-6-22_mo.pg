DOCUMENT();

loadMacros(
	'PGstandard.pl',
	'MathObjects.pl',
	'contextFraction.pl'
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric')->variables->are(
	x => 'Real',
	g => [ 'Real', TeX => 'g(x)' ]
);

do {
	$a = random(1, 9);
	$b = random(5, 18);
	$c = random(1, 9);
	$p = random(2, 5);
	$q = random(2, 5);
	$xo = non_zero_random(-9, 9);
	$go = non_zero_random(-9, 9);
	$F = Formula(
		"$a*g^($p) + $b*x - $c*x^($q)*g"
	)->reduce;
	$Fxo = $F->D('x')->eval(
		x => $xo,
		g => $go
	);
	$Fgo = $F->D('g')->eval(
		x => $xo,
		g => $go
	);
	$d = $F->eval(
		x => $xo,
		g => $go
	);
} until (
	gcd($a, $b) == 1
	and $Fxo and $Fgo
	and $d
	and abs($d) < 100
);

$lhs = ( $a == 1 ? '' : $a )
	. "\left( g(x) \right)^{$p} + $b x";
$rhs = ( $c == 1 ? '' : $c )
	. "x^{$q} g(x)"
	. ( $d > 0 ? '+' : '-' ) . abs($d);

Context('Fraction');
$gpxo = Fraction(-$Fxo, $Fgo)->reduce;

Context()->texStrings;
BEGIN_TEXT
Suppose that \( $lhs = $rhs \), and that
\( g($xo) = $go \). Find \( g'($xo) \).
$BR $BR
\( g'($xo) \) = \{ ans_rule() \}
END_TEXT
Context()->normalStrings;

ANS($gpxo->cmp);

;

ENDDOCUMENT();
