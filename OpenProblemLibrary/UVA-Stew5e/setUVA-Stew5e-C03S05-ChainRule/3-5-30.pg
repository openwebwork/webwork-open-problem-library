DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


Context('Numeric');

$a = random(2,9,1);
$b_numb = random(2,9,1);
$b_sign = random(-1,1,2);
$b      = $b_numb * $b_sign;


BEGIN_TEXT
Let \[ y = \sqrt{$a + $b \tan{x}}  \]
$BR$BR
\( \frac{dy}{dx} = \) \{ans_rule(80) \}
END_TEXT


Context('Numeric');
$ans = Compute("$b/2*(sec(x))^2*($a+$b*tan(x))^(-.5)");
ANS($ans->cmp(limits=>[-.2,.2]));

ENDDOCUMENT();        # This should be the last executable line in the problem.
