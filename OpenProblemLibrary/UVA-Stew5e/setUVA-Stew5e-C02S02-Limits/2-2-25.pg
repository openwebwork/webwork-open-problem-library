$mb = -$b;
$f = Formula("(x-$a)/((x^2)(x+$b))")->reduce;

if ($mb > $a) {
    $ans = Compute("Infinity");
}
else {
    $ans = Compute("-Infinity");
}
Context()->texStrings;

BEGIN_TEXT

