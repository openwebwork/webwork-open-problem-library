## DBsubject('Calculus')
## DBchapter('Introduction to Differential Equations')
## DBsection('First Order Linear Equations')
## KEYWORDS('calculus', 'differential equations', 'linear equation', 'first order')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('9.5')
## Problem1('11')
## Author('LA Danielson')
