# DBchapter('')
# DBsection('')
# KEYWORDS('')
# TitleText1('Calculus: Early Transcendentals')
# EditionText1('2')
# AuthorText1('Rogawski')
# Section1('10.7')
# Problem1('29')
# Author('Nick Hamblet')
