DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
Context()->texStrings;
Context()->variables->add(n=>'Real');

#$p=1;
#$q=1;
#$r=1;
$p=random(1,9,1);
$q=random(1,9,1);
$qq=$q**2;
$r=random(1,9,1);

##for variation in answer, if $pn is 2 nonzero, if $pn is 3, zero
$pn = random(2,3,1); 

$an=Formula("($p n)/sqrt($qq n^($pn)+$r)")->reduce;
$ax = $an->substitute(n=>x);
if($pn==3){
  $ans=0;
  Context()->flags->set(reduceConstants=>0);
  $ax1=Formula("($p x/x^(3/2))/(sqrt($qq x^($pn)+$r)/(x^(3/2)))");
  $ax2=Formula("($p/sqrt(x))/sqrt($qq+$r/x^3)");
  $solText = "
We have \(a_n=f(n)\) where \(f(x)= $ax\).  Thus
\[
\lim_{n\to\infty}$an = 
\lim_{x\to\infty}$ax =
\lim_{x\to\infty}$ax1
\]
\[
 = \lim_{x\to\infty}$ax2 = 
\frac{0}{\sqrt{$qq+0}} = 
\frac{0}{$q} =
$ans.
\]
"


}
else{
  $ans = $p/$q;
  $ax1=Formula("(($p x)/x)/(sqrt($qq x^($pn)+$r)/x)");
  $ax2 = Formula("$p /(sqrt($qq +$r/x^($pn)))");
  $solText = "
We have \(a_n=f(n)\) where \(f(x)=$ax\).  Thus
\[
\lim_{n\to\infty}a_n = 
\lim_{x\to\infty}f(x) =
\lim_{x\to\infty} $ax
\]
\[
= \lim_{x\to\infty} $ax1 = 
\lim_{x\to\infty} $ax2 =
\frac{$p}{$q} = $ans.
\]


";

}



BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "10.1","23") \}
$PAR
Use Theorem 1 to determine the limit of the sequence or type DIV if the sequence diverges.$PAR
\(a_n=$an\)
$PAR
\(\lim\limits_{n\to\infty}a_n = \)  \{ans_rule()\}$BR
END_TEXT
Context()->normalStrings;

ANS(std_num_str_cmp($ans,['DIV']));

Context()->texStrings;
Context()->flags->set(reduceConstants=>0);


SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$solText

END_SOLUTION

ENDDOCUMENT();
