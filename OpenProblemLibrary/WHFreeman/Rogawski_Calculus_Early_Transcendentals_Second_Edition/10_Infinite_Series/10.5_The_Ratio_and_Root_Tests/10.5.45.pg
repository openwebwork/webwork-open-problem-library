$exp = random(2, 7);
$base = random(2, 9);

#Let's try to make a multiple choice question
$question = new_multiple_choice();
$question->qa(' \( \sum\limits_{n=1}^{\infty} \frac{n^{$exp}}{$base^n} \) is:', 'convergent');
$question->makeLast( 'convergent', 'divergent');


Context()->texStrings;

