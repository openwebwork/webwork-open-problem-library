## DBsubject('Calculus')
## DBchapter('Vector Geometry')
## DBsection('A Survey of Quadratic Surfaces')
## KEYWORDS('calculus')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('12.6')
## Problem1('9')
## Author('JustAsk - Vladimir Finkelshtein')
## Institution('W.H.Freeman')

DOCUMENT();

loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");
loadMacros("PGauxiliaryFunctions.pl");
loadMacros("PGgraphmacros.pl");
loadMacros("PGchoicemacros.pl");

TEXT(beginproblem());

$a=random(2,8,1);
$b=random(2,8,1);

$ysign=list_random(0,1);
$zpow=1;
if ($ysign==0) {$zpow=list_random(1,2)};
$sum=$zpow+$ysign;
if ($ysign==0) {$ysign='-'};
if ($ysign==1) {$ysign='+'};
if ($sum==1) {$ans='a hyperbolic paraboloid'};
if ($sum==2) {$ans='an elliptic paraboloid'};
if ($sum==3) {$ans='an eliptic cone'};
if ($zpow==1) {$zpow=''};

Context()->texStrings;

BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.6","9") \}
$PAR
State whether the equation
$BR
\( z^{$zpow}=\left( \frac{x}{$a} \right)^2 $ysign \left( \frac{y}{$b} \right)^2 \) 
$PAR
defines (enter number of statement):
$BR
1. A hyperbolic paraboloid
$BR
2. An elliptic paraboloid 
$BR
3. An elliptic cone
$BR
4. None of these
$BR
\{ans_rule(1)\}
$BR
END_TEXT 

Context()->normalStrings;

ANS(Real($sum)->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$BR
This equation is the equation of $ans. The correct answer is \($sum\).
$BR
END_SOLUTION

ENDDOCUMENT();