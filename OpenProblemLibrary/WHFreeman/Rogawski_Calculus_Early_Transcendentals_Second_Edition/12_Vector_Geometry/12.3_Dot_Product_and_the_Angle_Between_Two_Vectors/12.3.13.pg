sub vdot
{
    my($temp) = 0;

    for ($i = 0; $i < 3; $i++)
    {
        $temp = $temp + $_[$i] * $_[$i + 3];
    }
    return $temp
}

sub vlen
{
    return sqrt($_[0]**2 + $_[1]**2 + $_[2]**2);
}

sub vcos
{
    my($dot) = vdot(@_);

    return $dot / (vlen($_[0], $_[1], $_[2]) * vlen($_[3], $_[4], $_[5]));
}

sub vang
{
    return Formula("arccos(x)")->eval(x=>vcos(@_));
}

# projection of u onto v (first onto second)
sub vproj
{
    my(@temp) = ($_[3], $_[4], $_[5]);
    my($temp2) = vdot(@_);

    $temp2 = $temp2 / vdot($_[3], $_[4], $_[5], $_[3], $_[4], $_[5]);

    $temp[0] *= $temp2;
    $temp[1] *= $temp2;
    $temp[2] *= $temp2;

    return @temp;
}

# perpendicular component of u onto v (first onto second)
sub vperp
{
    my(@temp) = vproj(@_);

    $temp[0] = -1 * $temp[0] + $_[0];
    $temp[1] = -1 * $temp[1] + $_[1];
    $temp[2] = -1 * $temp[2] + $_[2];

    return @temp;
}

