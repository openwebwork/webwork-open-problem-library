## DBsubject('Calculus')
## DBchapter('Introduction to Differential Equations')
## DBsection('Vectors in Three Dimensions')
## KEYWORDS('calculus', 'parametric', 'vector', '3D', 'three dimensions')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('12.2')
## Problem1('19')
## Author('Christopher Sira')
## Institution('W.H.Freeman')

DOCUMENT();
loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("PGchoicemacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");
$context = Context("Vector");

$a = Real(random(1, 4, 1));
$b = Real(random(1, 4, 1));

$v0 = Real(random(-5, 5, 1));
$v1 = Real(random(-5, 5, 1));
$v2 = Real(random(-5, 5, 1));

$w0 = Real(random(-5, 5, 1));
$w1 = Real(random(-5, 5, 1));
$w2 = Real(random(-5, 5, 1));



$v = Vector($v0, $v1, $v2);
$w = Vector($w0, $w1, $w2);

$ans = Vector($a * $v0 + $b * $w0, 
              $a * $v1 + $b * $w1,
              $a * $v2 + $b * $w2);



Context()->texStrings;
BEGIN_TEXT
\{ beginproblem() \}
\{ textbook_ref_exact("Rogawski ET 2e", "12.2","19") \}
$PAR
Calculate the linear combination:
\( $a $v + $b $w \)  = \{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$PAR
\($a $v + $b $w \) $BR
\(\quad = \left< $a ($v0) + $b ($w0), $a ($v1) + $b ($w1), $a ($v2) + $b ($w2) \right> \) $BR
\(\quad = $ans \)
END_SOLUTION

ENDDOCUMENT();


