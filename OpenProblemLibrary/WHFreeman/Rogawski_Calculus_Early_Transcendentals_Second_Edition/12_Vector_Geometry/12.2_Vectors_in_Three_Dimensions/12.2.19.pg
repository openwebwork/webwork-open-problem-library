## DBsubject(Geometry)
## DBchapter(Vector geometry)
## DBsection(Vectors and vector arithmetic)
## Institution(W.H.Freeman)
## Author(Christopher Sira)
## MLT(va_lc_compute)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('12.2')
## Problem1('19')
## KEYWORDS('calculus', 'parametric', 'vector', '3D', 'three dimensions')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
$context = Context("Vector");

$a = Real(random(1, 4, 1));
$b = Real(random(1, 4, 1));

$v0 = Real(random(-5, 5, 1));
$v1 = Real(random(-5, 5, 1));
$v2 = Real(random(-5, 5, 1));

$w0 = Real(random(-5, 5, 1));
$w1 = Real(random(-5, 5, 1));
$w2 = Real(random(-5, 5, 1));



$v = Vector($v0, $v1, $v2);
$w = Vector($w0, $w1, $w2);

$ans = Vector($a * $v0 + $b * $w0, 
              $a * $v1 + $b * $w1,
              $a * $v2 + $b * $w2);



Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.2","19") \}
$PAR
Calculate the linear combination:
\( $a $v + $b $w \)  = \{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$PAR
\($a $v + $b $w \) $BR
\(\quad = \left< $a ($v0) + $b ($w0), $a ($v1) + $b ($w1), $a ($v2) + $b ($w2) \right> \) $BR
\(\quad = $ans \)
END_SOLUTION

ENDDOCUMENT();


