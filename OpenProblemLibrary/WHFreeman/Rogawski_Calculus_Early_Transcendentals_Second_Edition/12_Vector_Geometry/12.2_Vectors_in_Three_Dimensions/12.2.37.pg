## DBsubject(Calculus - multivariable)
## DBchapter(Calculus of vector valued functions)
## DBsection(Parameterized curves)
## Institution(W.H.Freeman)
## Author(Christopher Sira)
## MLT(pc_lines_point_direction)
## Level(2)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('12.2')
## Problem1('37')
## KEYWORDS('calculus', 'parametric', 'vector', '3D', 'three dimensions')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
$context = Context("Vector");

$context->variables->add(t=>'Real');
$context->variables->add(C=>'Real');

$random = Real(random(0,2,1));

$t = Formula("t");
$C = Formula("C");

$plane = "xy";
$ans = Vector(0, 0, $t);
$temp = Vector(0,0,$C);

$false1 = Vector($t,
                 $t,
                 0);

$false2 = Vector($t,
                 0,
                 0);

$false3 = Vector(0,
                 $t,
                 0);



if ($random == 1)
{
    $plane = "yz";
    $ans = Vector($t, 0, 0);
    $temp = Vector($C, 0, 0);

$false1 = Vector(0,
                 $t,
                 $t);

$false2 = Vector(0,
                 0,
                 $t);

$false3 = Vector(0,
                 $t,
                 0);
}

if ($random == 2)
{
    $plane = "xz";
    $ans = Vector(0, $t, 0);
    $temp = Vector(0, $C, 0);

$false1 = Vector($t,
                 0,
                 $t);

$false2 = Vector(0,
                 0,
                 $t);

$false3 = Vector($t,
                 0,
                 0);
}


Context()->texStrings;

$mc = new_multiple_choice();

$mc->qa("Find the vector parameterization for the line which passes through the origin and is perpendicular to the ${plane}-plane.",
        "\($ans\)");

$mc->extra( "\($false1\)",
            "\($false2\)",
            "\($false3\)" );

#Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.2","37") \}
$PAR
\{$mc->print_q\}
$PAR
\{$mc->print_a\}
END_TEXT
#Context()->normalStrings;

ANS(str_cmp($mc->correct_ans));

#Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
\( v(t) = P + t*\mathbf{w} \)
$PAR
Since the line passes through the origin, P = 0.
$PAR
\( \mathbf{w} \) can be any vector of the form \( $temp \) with \( C \neq 0 \).
$PAR
The only answer that matches these is \( $ans \).
END_SOLUTION

ENDDOCUMENT();


