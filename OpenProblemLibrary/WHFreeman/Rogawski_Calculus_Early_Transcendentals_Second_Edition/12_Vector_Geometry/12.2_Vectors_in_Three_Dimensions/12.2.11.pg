## DBsubject(Geometry)
## DBchapter(Vector geometry)
## DBsection(Vectors and vector arithmetic)
## Institution(W.H.Freeman)
## Author(Christopher Sira)
## MLT(va_base)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('12.2')
## Problem1('11')
## KEYWORDS('calculus', 'parametric', 'vector', '3D', 'three dimensions')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "Parser.pl",
  "freemanMacros.pl",

  "PGcourse.pl"
);

TEXT(beginproblem());
$context = Context("Vector");

$p0 = Real(random(1, 10, 1));
$p1 = Real(random(1, 10, 1));
$p2 = Real(random(1, 10, 1));

$q0 = Real(random(-10, 10, .25));
$q1 = Real(random(-10, 10, .25));
$q2 = Real(random(-10, 10, .50));


$v0 = $q0 - $p0;
$v1 = $q1 - $p1;
$v2 = $q2 - $p2;



$p = Point("($p0, $p1, $p2)");
$q = Point("($q0, $q1, $q2)");
$v = Vector($v0, $v1, $v2);

$ans = $p;


Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.2","11") \}
$PAR
Find the point P such that \( \mathbf{v} = \overrightarrow{PQ} \) has the components \( $v \).
$PAR
\( Q = $q \)
$PAR
\( P \)  = \{ans_rule()\} \{ helpLink("points") \}.
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
\( P = Q - \mathbf{v} = \left< $q0 - $v0, $q1 - $v1, $q2 - $v2 \right> = $p \).
END_SOLUTION

ENDDOCUMENT();


