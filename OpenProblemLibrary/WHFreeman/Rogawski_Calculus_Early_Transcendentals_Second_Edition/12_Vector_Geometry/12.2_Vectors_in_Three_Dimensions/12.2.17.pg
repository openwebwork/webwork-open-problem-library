## DBsubject('Calculus')
## DBchapter('Introduction to Differential Equations')
## DBsection('Vectors in Three Dimensions')
## KEYWORDS('calculus', 'parametric', 'vector', '3D', 'three dimensions')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('12.2')
## Problem1('17')
## Author('Christopher Sira')
## Institution('W.H.Freeman')

DOCUMENT();
loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("PGchoicemacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");
$context = Context("Vector");

$p0 = Real(random(-4,4,1));
$p1 = Real(random(-4,4,1));
$p2 = Real(random(-4,4,1));

$v0 = Real(random(-5,5,1));
$v1 = Real(random(-5,5,1));
$v2 = Real(random(-5,5,1));

$a0 = Real(random(-5,5,1));
$a1 = Real(random(-5,5,1));
$a2 = Real(random(-5,5,1));

$q0 = $p0 + $v0;
$q1 = $p1 + $v1;
$q2 = $p2 + $v2;

$b0 = $a0 + $v0;
$b1 = $a1 + $v1;
$b2 = $a2 + $v2;

$p = Point($p0, $p1, $p2);
$q = Point($q0, $q1, $q2);
$a = Point($a0, $a1, $a2);
$b = Point($b0, $b1, $b2);


$v = Vector($v0, $v1, $v2);

$mc = new_multiple_choice();

$mc->qa("Is \( \overrightarrow{PQ} \) equivalent to \( \overrightarrow{AB} \)?",
"yes");

$mc->extra("no");

Context()->texStrings;
BEGIN_TEXT
\{ beginproblem() \}
\{ textbook_ref_exact("Rogawski ET 2e", "12.2","17") \}
$PAR
\( A = $a \)
$PAR
\( B = $b \)
$PAR
\( P = $p \)
$PAR
\( Q = $q \)
$PAR
\{$mc->print_q \}
$PAR
\{$mc->print_a \}
END_TEXT
Context()->normalStrings;

ANS(str_cmp($mc->correct_ans));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
\( v_1 = Q - P = $v \)
$PAR
and \( v_2 = B - A = $v \)
$PAR
So they are equivalent.
END_SOLUTION

ENDDOCUMENT();


