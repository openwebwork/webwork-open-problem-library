DOCUMENT();
loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");

Context("Vector");

#$P1=3;
#$P2=2;
#$Q1=2;
#$Q2=7;

$P1=random(-4,4,1);
$P2=random(-4,4,1);
$a1=non_zero_random(-5,5,1);
$a2=non_zero_random(-5,5,1);
$Q1=$P1+$a1;
$Q2=$P2+$a2;
$a=Vector($a1,$a2);
$P=Point($P1,$P2);
$Q=Point($Q1,$Q2);

BEGIN_TEXT
\{ beginproblem() \}
\{ textbook_ref_exact("Rogawski ET 2e", "12.1","7") \}
$PAR
If \(P=$P\) and \(Q=$Q\), find the components of \(\vec{PQ}\)$BR
\(\vec{PQ}=\)\{ans_rule(10)\}$BR
END_TEXT

ANS($a->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
Using the definition of the components of a vector we have \(\vec{PQ}=\langle $Q1 - $P1 , $Q2-$P2\rangle = $a \)
END_SOLUTION

ENDDOCUMENT();
