## DBchapter('Vectors and the Geometry of Space')
## DBsection('Vectors')
## KEYWORDS('vector')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('12.1')
## Problem1('33')
## Author('Danny Glin')
## Institution('W.H.Freeman')

DOCUMENT();
loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");

Context("Vector");

#$R1=-2;
#$R2=7;

$R1=non_zero_random(-5,5,1);
$R2=non_zero_random(-5,5,1);

$R=Point($R1,$R2);
$OR=Vector($R);
$ans=$OR->norm;
$anssquare=$ans**2;

BEGIN_TEXT
\{ beginproblem() \}
\{ textbook_ref_exact("Rogawski ET 2e", "12.1","33") \}
$PAR
Let \(R=$R\).  Calculate the length of \(\vec{OR}\).
$BR
\{ans_rule\}
END_TEXT

ANS($ans->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
Since \(\vec{OR}=$OR\), the length of the vector is \(||\vec{OR}||=\sqrt{($R1)^2+($R2)^2}=\sqrt{$anssquare}\).
END_SOLUTION

ENDDOCUMENT();
