## DBchapter('Vectors and the Geometry of Space')
## DBsection('Vectors')
## KEYWORDS('vector')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('12.1')
## Problem1('13')
## Author('Danny Glin')
