## DBsubject(Calculus - single variable)
## DBchapter(Infinite sequences and series)
## DBsection(Taylor polynomials)
## Institution(W.H.Freeman)
## Author(Christopher Sira)
## MLT(FindPoly)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('8.4')
## Problem1('9')
## KEYWORDS('calculus', 'taylor series', 'taylor polynomials', 'partial sums')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$a = random(0, 10);
$f = Formula("e^(-x) + e^(-2x)");
$df = Formula("-e^(-x) - 2e^(-2x)");
$df2 = Formula("e^(-x) + 4e^(-2x)");
$df3 = Formula("-e^(-x) -8e^(-2x)");
$mdf3 = Formula("e^(-x) +8e^(-2x)");

$f_at_a = $f->substitute(x=>$a)->reduce;
$df_at_a = $df->substitute(x=>$a)->reduce;
$df2_at_a = $df2->substitute(x=>$a)->reduce;
$df3_at_a = $df3->substitute(x=>$a)->reduce;
$mdf3_at_a = $mdf3->substitute(x=>$a)->reduce;

$ans_a = Formula("$f_at_a + $df_at_a * (x - $a) + $df2_at_a/2 * (x - $a)^2");

$ans_b = Formula("$f_at_a + $df_at_a * (x - $a) + $df2_at_a/2 * (x - $a)^2 + $df3_at_a/6 * (x - $a)^3");

$red_a = $ans_a->reduce;
$red_b = $ans_b->reduce;

Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "8.4","9") \}
$PAR
Calculate the Taylor polynomials \( T_2(x) \) and \( T_3(x) \) centered at \( x = $a \) for \( f(x) = $f \).
$PAR

END_TEXT

TEXT(EV2(<<EOT));
$BR
\( T_2(x) \) must be of the form
\[A + B(x-$a) + C(x-$a)^2\] 
where $BR
\(A\) = :
\{ans_rule(40) \}
$BR
EOT

$ans0 = $f_at_a;

ANS($ans0->cmp);


TEXT(EV2(<<EOT));
\(B\) = :
\{ans_rule(40) \}
and 
$BR
EOT

$ans1 = $df_at_a;
ANS($ans1->cmp);


TEXT(EV2(<<EOT));
\(C\) = :
\{ans_rule(40) \}
$BR
EOT

$ans2 = $df2_at_a/2;
ANS($ans2->cmp);

TEXT(EV2(<<EOT));
$BR
\( T_3(x) \) must be of the form
\[D + E(x-$a) + F(x-$a)^2 + G(x-$a)^3\] 
$BR
where $BR
\(D\) = :
\{ans_rule(40) \}
$BR
EOT

ANS($ans0->cmp);

TEXT(EV2(<<EOT));
\(E\) = :
\{ans_rule(40) \}
$BR
EOT

ANS($ans1->cmp);

TEXT(EV2(<<EOT));
\(F\) = :
\{ans_rule(40) \}
and 
$BR
EOT

ANS($ans2->cmp);

TEXT(EV2(<<EOT));
\(G\) = :
\{ans_rule(40) \}
$BR
EOT

$ans3 = $df3_at_a/6;
$mans3 = $mdf3_at_a/6;;
ANS($ans3->cmp);



Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
Recall the general formula for the Taylor polynomial centered at \(x\) = a:
\[
\begin{array}{lcll} 
T(x) & = && f(a)  \cr\cr 
& & + & \frac{f'(a)}{1!} (x-a) \cr \cr
& & + & \frac{f''(a)}{2!} (x-a)^2 \cr \cr
& & + & \ldots \cr \cr
& & + & \frac{f^n(a)}{n!} (x-a)^n 
\end{array} \]
$BR
So, in this case, 
$BR
\[ f(x) = $f \]
\[ f'(x) = $df \]
\[ f''(x) = $df2 \]
\[ f'''(x) = $df3 \]
$BR
and 
$BR
\( T_2(x) = A + B(x-$a) + C(x-$a)^2\) 
$BR
where 
$BR
\(A=f($a)=$ans0\) 
$BR
\(B=f'($a)=$ans1\) 
$BR
\(C=\frac{f''($a)}{2!}=$ans2\) 
$BR
Thus, 
$BR
\[ T_2(x) = $red_a \]
$BR
Similarly, 
$BR
\( T_3(x) = D + E(x-$a) + F(x-$a)^2 + G(x-$a)^3\) 
$BR
where 
$BR
\(D=f($a)=$ans0\) 
$BR
\(E=f'($a)=$ans1\) 
$BR
\(F=\frac{f''($a)}{2!}=$ans2\) 
$BR
\(G=\frac{f'''($a)}{3!}=-$mans3\) 
$BR
Thus, \(T_3(x) = \)
\[
\begin{array}{lcl} 
& = & $red_a  \cr\cr 
& & - {$mans3} (x-$a)^3 
\end{array} \] 
END_SOLUTION

ENDDOCUMENT();


