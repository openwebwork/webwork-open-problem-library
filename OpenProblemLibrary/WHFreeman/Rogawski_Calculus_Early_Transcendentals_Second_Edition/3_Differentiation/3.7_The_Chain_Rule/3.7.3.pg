# Author('JustAsk!')

## DBsubject('Calculus')
## DBchapter('Differentiation')
## DBsection('The Chain Rule')
## KEYWORDS('calculus', 'derivatives', 'chain rule')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('3.7')
## Problem1('3')
## Institution('W.H.Freeman')

## Show partial correct answers
$showPartialCorrectAnswers = 1;
$solutionexits=1;

TEXT(beginproblem());

$b=random(3,9,1);

$f="tan(u)";
$g="x**$b";
$fg="tan(x**$b)";
$derivf="(sec(u))**2";
$derivfatg="(sec(x**$b))**2";
$derivg="$b*x**($b-1)";
$derivfg="(sec(x**$b))**2*$b*x**($b-1)";

TEXT(EV2(<<EOT));
\{ textbook_ref_exact("Rogawski ET 2e", "3.7","3") \}$BR
Given the following functions: \( f(u)=\tan(u)\) and \(g(x)=x^{$b} \). Find: $BR
\( f(g(x))= \) \{ans_rule() \} $BR
EOT

ANS(fun_cmp($fg));

TEXT(EV2(<<EOT));
\( f'(u)= \) \{ans_rule() \} $BR
EOT

ANS(fun_cmp($derivf,var=>'u'));

TEXT(EV2(<<EOT));
\( f'(g(x))= \) \{ans_rule() \} $BR
EOT

ANS(fun_cmp($derivfatg));

TEXT(EV2(<<EOT));
\( g'(x)= \) \{ans_rule() \} $BR
EOT

ANS(fun_cmp($derivg));

TEXT(EV2(<<EOT));
\( (f\circ g)'(x)= \) \{ans_rule() \} $BR
EOT
$b1=$b-1;

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD $PAR

\{begintable(5)\}
        \{row("\(f(g(x)\)  "," \(f'(u)\) "," \(f'(g(x))\)","\(g'(x)\)"," \((f \circ g)'\) ", @firstrow)\}
        \{row("\(\tan(x^{$b})\)  "," \(\sec^2u\) "," \(\sec^2(x^{$b})\)","\($b x^{$b1}\)"," \($b x^{$b1} \sec^2(x^{$b})\) ", @secondrow)\}

        \{endtable()\}
$PAR

END_SOLUTION
ANS(fun_cmp($derivfg));

