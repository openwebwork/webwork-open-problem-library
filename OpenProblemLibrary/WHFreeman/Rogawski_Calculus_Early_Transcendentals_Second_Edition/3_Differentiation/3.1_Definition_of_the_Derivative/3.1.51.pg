## DBsubject('Calculus')
## DBchapter('Limits and Derivatives')
## DBsection('Definition of the Derivative')
## KEYWORDS('calculus', 'derivatives', 'limits', 'definition of derivative')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('3.1')
## Problem1('51')
## Author('Sam Hathaway')
## Institution('W.H.Freeman')

DOCUMENT();
loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");

#$f = Formula("x^3");
#$a = Real(5);
$f = Formula("x^".random(2,4,1));
$a = Real(random(2,6,1));
Context()->variables->add(h=>'Real');
$f_a_plus_h = $f->substitute(x=>Formula("$a+h"));
$f_a = $f->substitute(x=>$a);
$form = Formula("($f_a_plus_h-$f_a)/(h)");

Context()->texStrings;
BEGIN_TEXT
\{ beginproblem() \}
\{ textbook_ref_exact("Rogawski ET 2e", "3.1","51") \}
$PAR
The limit below represents a derivative \( f'(a) \). Find \( f(x) \) and \( a \).
\[ \lim_{h\to 0}$form \]
$PAR
\( f(x) = \) \{ans_rule()\}
$BR
\( a = \) \{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS($f->cmp);
ANS($a->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
The difference quotient
\[ $form \]
has the form
\[ \frac{f(a+h)-f(a)}{h} \]
where \( f(x)=$f \)
and \( a=$a \).
END_SOLUTION

ENDDOCUMENT();
