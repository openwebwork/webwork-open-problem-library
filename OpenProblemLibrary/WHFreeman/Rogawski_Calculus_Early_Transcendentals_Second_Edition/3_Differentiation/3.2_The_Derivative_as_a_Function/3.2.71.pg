## DBsubject('Calculus')
## DBchapter('Limits and Derivatives')
## DBsection('The Derivative as a Function')
## KEYWORDS('calculus', 'derivatives', 'absolute value', 'limits')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('3.2')
## Problem1('71')
## Author('Sam Hathaway')
## Institution('W.H.Freeman')

DOCUMENT();
loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");
loadMacros("PGgraphmacros.pl");

#$c = 1;
$c = random(-4,4,1);
$f = Formula("|x-$c|")->reduce;

$f_for_graph = "abs(x-$c)";
$xmin = $c-5;
$xmax = $c+5;
$ymin = -1;
$ymax = 9;
$graph = init_graph(
    $xmin, $ymin,
    $xmax, $ymax,
    grid => [10,10],
    axes => [0,0],
    pixels => [400,400],
);
plot_functions($graph, "$f_for_graph for x in [$xmin,$xmax] using color:red and weight:2");

Context()->texStrings;
BEGIN_TEXT
\{ beginproblem() \}
\{ textbook_ref_exact("Rogawski ET 2e", "3.2","71") \}
$PAR
Find the points \( c \) (if any) such that \( f'(c) \) does not exist.
$PAR
\[ f(x)=$f \]
$PAR
\( c = \) \{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS(List($c)->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$PAR
Here is the graph of \( f(x)=$f \).
$PAR
\{ image(insertGraph($graph)) \}
$PAR
Its derivative does not exist at \( x=$c \). At that value of \( x \) there is a sharp point.
END_SOLUTION

ENDDOCUMENT();
