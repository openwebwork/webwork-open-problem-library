## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Chain rule (without trigonometric functions))
## Institution(W.H.Freeman)
## Author(Keith Thompson)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('3.10')
## Problem1('3')
## KEYWORDS('calculus', 'derivatives', 'implicit differentiation')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers=1;
Context()->variables->are(
	x => 'Real',
	y => 'Real',
	D => 'Real'
);

$a = random(3, 9);
$b = random(3, 9);
$f = Formula("x^($a)*y^($b)"); 
$am1 = ( $a == 2 ? '' : $a - 1 );
$bm1 = ( $b == 2 ? '' : $b - 1 );
$Dxf = Formula("$a*x^($a - 1)*y^($b) + $b*x^($a)*y^($b - 1)")->reduce;
$ans = Formula("$a*x^($a - 1)*y^($b) + $b*x^($a)*y^($b - 1) D")->reduce;

Context()->texStrings;
BEGIN_TEXT
Assuming that \( y \) is a function of \( x \),
differentiate \( $f \) with respect to \( x \).
$BR
Use \( D \) for \( \displaystyle \frac{dy}{dx}\)
in your answer. 
$BR $BR
\( \dfrac{d}{dx} \left( $f \right) = \)
\{ ans_rule() \}
END_TEXT
ANS($ans->cmp);

Context()->texStrings; 
BEGIN_SOLUTION
Differentiating with respect to \( x \) gives
\[
\dfrac{d}{dx} \left( $f \right) = $Dxf \, \frac{dy}{dx}.
\]
END_SOLUTION

ENDDOCUMENT();
