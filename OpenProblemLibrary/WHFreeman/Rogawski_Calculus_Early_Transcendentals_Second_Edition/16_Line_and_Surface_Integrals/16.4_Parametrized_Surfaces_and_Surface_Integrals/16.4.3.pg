TEXT(beginproblem());

$a=random(2,9);
$b=random(2,9);
$c=2*$a-1;

$u0=random(2,9);
$v0=random(2,9);

$answerb=Real($u0*$v0*$a*sqrt(6));
$solc=Real(4*$v0*$a*$c*$u0**3-3*$a*($c-1)*($u0**2)*($v0**2)-4*$a*$u0*$v0**3);
$answerc=Real($solc*sqrt(6)/12);

$FF="\mathbf{F}";
$path="\mathbf{c}";
