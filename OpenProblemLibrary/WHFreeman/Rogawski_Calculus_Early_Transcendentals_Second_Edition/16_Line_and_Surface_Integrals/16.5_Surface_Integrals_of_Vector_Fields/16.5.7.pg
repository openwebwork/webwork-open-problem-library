$r24=$r4/4;
$r22=$r4/2;
$f="\left< 0,$fy,x^2\right>";
$sol="\frac{$r4\pi }{4}";
if ($r2%2==0) {$sol="\frac{$r22\pi}2";};
if ($r2%4==0) {$sol="$r24\pi";};

$surf="\mathcal{S}";
