## DBsubject('Calculus')
## DBchapter('Differentiation in Several Variables')
## DBsection('Partial Derivatives')
## KEYWORDS('calculus')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('14.3')
## Problem1('7')
## Author('JustAsk - Vladimir Finkelshtein')
## Institution('W.H.Freeman')

DOCUMENT();

loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");
loadMacros("PGauxiliaryFunctions.pl");
loadMacros("PGgraphmacros.pl");
loadMacros("PGchoicemacros.pl");

TEXT(beginproblem());

Context()->texStrings;

$a=non_zero_random(2,8,1);
$xpow=random(3,7,1);
$ypow=random(3,7,1);
$xpow1=$xpow-1;

$context = Context();
$context->variables->add(y=>'Real');
$f=Formula("x^($xpow)+$a*x*y-y^($ypow)")->reduce();
$z=Formula("x^($xpow)+$a*x-1")->reduce();
$dzdx=Formula("$xpow*x^($xpow-1)+$a*y")->reduce();
$ans=$xpow+$a;

BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "14.3","7") \}
$PAR
The plane \(y=1\) intersects the surface \(z=$f\) in a certain curve. Find the slope to the tangent line to this curve at the point \(P=(1,1,$a)\). 
$PAR
\(m=\) \{ans_rule()\}
$BR
END_TEXT 

Context()->normalStrings;

ANS(Real($ans)->cmp);


Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$BR
The slope of the tangent line to the curve \(z=z(x,1)=$z\), obtained by intersecting the surface \(z=$f\) with the plane \(y=1\), is the partial derivative \( \frac {\partial{z}}{\partial{x}}(1,1)\).
$PAR
 \( \frac {\partial{z}}{\partial{x}}=\frac {\partial}{\partial{x}}\left( $f \right) = $dzdx \)
$BR
\( m=\frac {\partial{z}}{\partial{x}}(1,1)=$xpow \cdot 1^{$xpow1}+$a \cdot 1=$ans \)
$BR
END_SOLUTION

ENDDOCUMENT();