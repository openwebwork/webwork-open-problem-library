}
else{
  $int4_sign = "Negative";
  $int4_increase = "Decreasing";
}

# find if f is a min/max
if($int1_fprime > 0 && $int2_fprime < 0){
	$cp1_max = "Local Max";
}
else{
	$cp1_max = "Local Min";
}

if($int2_fprime > 0 && $int3_fprime < 0){
	$cp2_max = "Local Max";
}
