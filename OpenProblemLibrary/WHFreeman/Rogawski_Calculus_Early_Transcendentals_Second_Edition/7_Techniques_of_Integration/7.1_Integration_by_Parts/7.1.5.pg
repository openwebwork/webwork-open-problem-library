## DBsubject('Calculus')
## DBchapter('Techniques of Integration')
## DBsection('Integration by Parts')
## KEYWORDS('calculus', 'integration', 'integration by parts')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('7.1')
## Problem1('5')
## Author('Christopher Sira')
## Institution('W.H.Freeman')

DOCUMENT();
loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl","parserFormulaUpToConstant.pl");
loadMacros("PGchoicemacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");
$context = Context();

#$context->variables->add(C=>'Real');

$a = Real(random(2, 15, 1));
$b=$a+1;
$u = Formula("ln(x)");
$du = Formula("1 / x");

$dv = Formula("x ** $a");
$v = Formula("(1 / $b) * x ** $b");
$iduv = Formula("(1 / ($b)**2) * x ** ($b)")->reduce();

$ans = FormulaUpToConstant("$u * $v - $iduv + C")->reduce();

Context()->texStrings;
BEGIN_TEXT
\{ beginproblem() \}
\{ textbook_ref_exact("Rogawski ET 2e", "7.1","5") \}
$PAR
Solve \( \int{ \{($u * $dv)->reduce()\} \, dx} \) using Integration by Parts.
$PAR
Use \( u = $u \) and \( v' = $dv \).
$PAR
\{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS($ans->cmp());

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$PAR
Using the given choice of \( u \) and \( v' \) results in
$PAR
\( u = $u \)
$PAR
\( u' = $du \)
$PAR
\( v = \frac{1}{$b}x^{$a} \)
$PAR
\( v' = $dv \)
$PAR
Using Integration by Parts,

\[
\begin{array}{ll}
\int \{($u * $dv)->reduce()\} \, dx & = \cr
& = $u \left(\frac{1}{$b}x^{$b}\right)  - \int \frac{1}{x} \left(\frac{1}{$b}x^{$b}\right) \, dx \cr
& = \frac{1}{$b}x^{$b}\ln x - \int\left(\frac{1}{$b}x^{$a}\right) \, dx \cr
& = \frac{1}{$b}x^{$b}\ln x - \frac{1}{$b}x^{$b} + C \cr
& = $ans 
\end{array}
\]

END_SOLUTION

ENDDOCUMENT();


