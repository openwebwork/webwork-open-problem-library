$showPartialCorrectAnswers = 0;

$n=random(2,5,1);
$yn=$n**2+2;
$par = (Formula("(x**2)+2"));
# Minimum and maximum x and y values to graph.
$xmin = -1;
$ymin = -1;
$xmax = $n+1;
