           "PGgraphmacros.pl"
           );
TEXT(beginproblem());
$showPartialCorrectAnswers = 0;
Context()->variables->are(y=>'Real');
$mh = random(10,25,5);
$ma = random(5,8,1);
$a=2;
$h=4;
$ma2=$ma*$ma;
$mh2=$mh*$mh;
$ma2mh=$ma*$ma*$mh;
Context()->flags->set(reduceConstants=>0);
$s=Formula("($ma2/$mh2)*($mh-y)^2");

$v=Real("($ma2)*$mh/3");
$xmin=-$a/2;
$ymin=-$a/2;
$xmax=(3*$a+1)/2+1;
$ymax=$h+1;
$xrange=$xmax-$xmin;
$yrange=$ymax-$ymin;
$xsize=150;

$ysize=int($yrange*$xsize/$xrange);
$graph = init_graph(
    $xmin, $ymin,
    $xmax, $ymax,
    size => [$xsize,$ysize],
);
$graph->moveTo(-$a/4,-$a/4);
$graph->lineTo(3*$a/4,-$a/4, 'blue');
$graph->lineTo(5*$a/4,$a/4);
$graph->lineTo($a/4,$a/4);
$graph->lineTo(-$a/4,-$a/4);
# now draw sides
$graph->moveTo($a/2,$h);
$graph->lineTo(3*$a/4,-$a/4);
$graph->moveTo($a/2,$h);
$graph->lineTo(5*$a/4,$a/4);
$graph->moveTo($a/2,$h);
$graph->lineTo($a/4,$a/4);
$graph->moveTo($a/2,$h);
$graph->lineTo(-$a/4,-$a/4);
$graph->moveTo($a/2,$h);
$graph->lineTo($a/2,0,'red');
# labels
$la = new Label($a/4, -$a/4, "$ma", 'blue', 'bottom');
$lh = new Label($a/2, $h/2, "$mh", 'red', 'right');
$graph->lb($la,$lh);
