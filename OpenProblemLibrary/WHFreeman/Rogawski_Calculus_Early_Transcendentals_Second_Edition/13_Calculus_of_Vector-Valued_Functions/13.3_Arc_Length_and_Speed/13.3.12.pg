## DBsubject('Calculus')
## DBchapter('Calculus of Vector-Valued Functions')
## DBsection('Arc Length and Speed')
## KEYWORDS('calculus', '')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('13.3')
## Problem1('12')
## Author('JustAsk - Vladimir Finkelshtein')
## Institution('W.H.Freeman')

DOCUMENT();

loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");

$t=random(0,5);
$n=random(0,1);
$n1=random(0,1);
if($n==0){$func='sinh';
          $funcder='cosh';}
if($n==1){$func='cosh';
          $funcder='sinh';}
if($n==0){$func1='sinh';
          $func1der='cosh';}
if($n==1){$func1='cosh';
          $func1der='sinh';}
$a=non_zero_random(-5,5,1);

$context = Context();
$context->variables->add(t=>'Real');

$x=Formula("$func(t)")->reduce();
$y=Formula("$func1(t)")->reduce();
$z=Formula("$a*t")->reduce();

$xder=Formula("$funcder(t)")->reduce();
$yder=Formula("$func1der(t)")->reduce();
$zder=Formula("$a")->reduce();
$v0x=$xder->eval(t=>$t);
$v0y=$yder->eval(t=>$t);
$v0z=$zder->eval(t=>$t);
$answer=sqrt($v0x**2+$v0y**2+$v0z**2);

Context()->texStrings;

BEGIN_TEXT
\{ beginproblem() \}
\{ textbook_ref_exact("Rogawski ET 2e", "13.3","12") \}
$PAR
Find the speed: \(\bf r\it(t)=\left<$x,$y,$z\right> \) at \(t=$t\).
$PAR
\(v($t)=\) \{ans_rule()\}
$BR
END_TEXT

Context()->normalStrings;
ANS(Real($answer)->cmp);
Context()->texStrings;

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$BR
The velocity vector is \(\bf r\it'(t)=\left< $xder, $yder, $zder \right>\).
$PAR
At \(t=$t\) the velocity is \(\bf r\it'($t)=\left<$v0x, $v0y, $v0z \right> \), hence the speed is $BR
\(v($t)=||\bf r\it'($t)||=\sqrt{($v0x)^2+($v0y)^2+($v0z)^2}={$answer:%.4f}\)
$BR
END_SOLUTION

ENDDOCUMENT();
