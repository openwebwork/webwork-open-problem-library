DOCUMENT();
loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl","PGchoicemacros.pl");

$context = Context();
$context->variables->add(t=>'Real');
$n=random(1,3,1);
$t=random(-5,5,1);
$t2=non_zero_random(-5,5,1)+$t;

if($n==1) {$q="There exist parameters \(t_1=$t\) and \(t_2=$t2\) such that \(\bf r\it_1($t)=\bf r\it_2($t2)\)";
$a='intersect but do not collide';
$wr1='intersect and collide';
$wr2='do not intersect';}
            
if($n==2) {$q="There exists a parameter \(t_0=$t\) such that \(\bf r\it_1($t)=\bf r\it_2($t)\)";
$a='intersect and collide';
$wr1='do not intersect';
$wr2='intersect and do not collide';}

if($n==3) {$q=" such that for each \(t_1\) and \(t_2\) \(\bf r\it_1(t_1) \ne \bf r\it_2(t_2)\)";
$a='do not intersect';
$wr1='intersect and collide';
$wr2='intersect but do not collide';}

$mc = new_multiple_choice();

$mc -> qa ("The two paths", "$a");
$mc ->extra("$wr1","$wr2","collide but do not intersect");
Context()->texStrings;

BEGIN_TEXT
\{ beginproblem() \}
\{ textbook_ref_exact("Rogawski ET 2e", "13.1","28") \}
$PAR
Given two paths \(\bf r\it_1\) and \(\bf r\it_2\). $q. 
$BR
\{$mc -> print_q \}
\{$mc -> print_a\}
$PAR
END_TEXT

Context()->normalStrings;
ANS(str_cmp($mc->correct_ans));
Context()->texStrings;

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$BR
Intersection is a geometric property of the curves. Collision depends on the actual parametrization. By definition the two paths $a.
$BR
END_SOLUTION

