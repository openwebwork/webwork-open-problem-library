## DBsubject('Calculus')
## DBchapter('Calculus of Vector-Valued Functions')
## DBsection('Curvature')
## KEYWORDS('calculus', '')
## TitleText1('Calculus Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('13.4')
## Problem1('10')
## Author('Nick Hamblet')
