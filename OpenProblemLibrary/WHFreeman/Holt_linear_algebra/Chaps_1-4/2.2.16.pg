);

# make sure we're in the context we want
Context("Numeric");
$shift=random(-1,1,2)*random(-1,1,2)*random(-1,1,2)*random(-1,1,2)*random(-1,1,2);

$v11=random(1,9,1);
$v12=random(-9,9,1);
$v13=random(-9,9,1);
$v21=random(-9,9,1);
$v22=random(1,9,1);
$v23=random(-9,9,1);
if($v11*$v22==$v12*$v21){$v22=-$v22;}
$v31=random(1,9,1)*random(-1,1,2);
$v32=random(-9,9,1);
$v33=random(1,9,1);
if($v11*$v22*$v33+$v21*$v32*$v13+$v31*$v12*$v23-$v13*$v22*$v31-$v23*$v32*$v11-$v33*$v12*$v21==0){$v33=-$v33;}



TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
BEGIN_TEXT
\{ textbook_ref_exact("Holt Linear Algebra", "2.2","16") \} 
$PAR
Find \(A\) and \({\bf b}\) such that  
\(A{\bf x}={\bf b}\) corresponds to the given linear system. 
$PAR
\[$v11 x_1 + $v21 x_2 = $v31\] 
$PAR
\[$v12 x_1 + $v22 x_2 = $v32\] 
$PAR
\[$v13 x_1 + $v23 x_2 = $v33\] 
$PAR
$PAR
\{ mbox( 
display_matrix([[ans_rule(5), ans_rule(5)], [ans_rule(5), ans_rule(5)], 
[ans_rule(5), ans_rule(5)]]), 
'\(\left[\begin{matrix} x_1 \cr x_2\cr \end{matrix}\right] =\) ', 
display_matrix([[ans_rule(5)], [ans_rule(5)], [ans_rule(5)]]) 
) \}
$PAR
END_TEXT
Context()->normalStrings;

ANS(num_cmp($v11));
ANS(num_cmp($v21));

ANS(num_cmp($v12));
ANS(num_cmp($v22));

ANS(num_cmp($v13));
ANS(num_cmp($v23));

ANS(num_cmp($v31));
ANS(num_cmp($v32));
ANS(num_cmp($v33));


Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR 
SOLUTION 
$PAR
\[\left[{\begin{matrix} $v11 & $v21 \cr $v12 & $v22 \cr $v13 & $v23\cr \end{matrix}}\right]
\left[{\begin{matrix} x_1 \cr x_2 \cr \end{matrix}}\right]= \left[{\begin{matrix} $v31 \cr $v32 \cr $v33 \cr \end{matrix}}\right]
\]


END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
