###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Matrix");
sub dispMat {
  my $A = shift;
  my @d = $A->dimensions;
  my @a = ();
  my $dA = "\left[\begin{array}{";
  for (my $i = 0; $i < $d[1]; $i++) {
    $dA = $dA."r";
  }
  $dA = $dA."}";
  for (my $i = 0; $i < $d[0]; $i++) {
    for (my $j = 0; $j < $d[1]; $j++) {
      $a[$i][$j] = $A->element($i+1,$j+1);
      if ($j != $d[1] - 1) {
        $dA = $dA." $a[$i][$j] & ";
      } elsif ($j == $d[1] - 1 && $i != $d[0] -1) {
        $dA = $dA." $a[$i][$j] \\";
      } else {
        $dA = $dA." $a[$i][$j]";
      }
    }
  }
  $dA = $dA."\end{array}\right]";
  return ($dA, @a);
}

$A = Matrix([1,non_zero_random(-9,9), 0, non_zero_random(-9,9), non_zero_random(-9,9)], [0,0,1, non_zero_random(-9,9), non_zero_random(-9,9)], [0,0,0,0,0]);
($dA, @a) = dispMat($A);
$pop = PopUp(["select", "echelon form", "reduced row echelon form", "not in echelon form"], "reduced row echelon form");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Determine if the matrix $PAR\[ $dA \]$PAR is in echelon form, reduced row echelon form, or neither. Choose the ${BITALIC}most appropriate${EITALIC} answer.
$PAR
Answer: \{$pop->menu()\}.
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($pop->cmp());


###########################################################################
# solution
###########################################################################
BEGIN_SOLUTION
${BBOLD}SOLUTION:${EBOLD}
Reduced row echelon form.
END_SOLUTION
Context()->normalStrings;

COMMENT('Created in 2013.
$BR
Desc: Determinen if the system is in echelon form and/or reduced echelon form.');
ENDDOCUMENT();
