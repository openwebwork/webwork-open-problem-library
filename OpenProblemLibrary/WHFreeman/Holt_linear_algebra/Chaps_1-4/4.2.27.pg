sub mycheck {
     my ($correct,$student,$ansHash) = @_;
	 my $m = Matrix([[$student->element(1,1), $student->element(2,1), $student->element(3,1)],
	  [$a11, $a21, $a31],
      [$a12, $a22, $a32]
      ]);
 	 return 1 if $m->det != Real(0);
	 return 0;
};

BEGIN_TEXT
