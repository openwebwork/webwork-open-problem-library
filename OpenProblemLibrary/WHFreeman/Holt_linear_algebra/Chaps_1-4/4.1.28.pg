DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "freemanMacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

# make sure we're in the context we want
#Context()->texStrings;
$b1=random(1,7,1)*random(-1,1,2);
$a11 = random(1,5,1);
$a12 = $a11*$b1;
$a21 = random(-7,7,1);
$a22 = $a21*$b1;
$a31 = random(-7,7,1);
if($a12==$a13){$a13=$a13+1};
$a32 = $a31*$b1;

# the arguments of PopUp are [list of answers], 
#    correct answer
$mc = new_multiple_choice();
$mc->qa(
    "What is null\((A)\)?", 
    "span\(\left\{\left[\begin{matrix} -$b1 \cr  1 \cr \end{matrix}\right]\right\}\)"
     );
$mc->extra(
    "\({\mathbb R}^2\)",
    "\({\mathbb R}^3\)",
    "span\(\left\{\left[\begin{matrix} $a11 \cr $a21 \cr $a31 \cr \end{matrix}\right]\right\}\)",
    "span\(\left\{\left[\begin{matrix} 0 \cr 0 \cr 0 \cr \end{matrix}\right]\right\}\)",
    "span\(\left\{\left[\begin{matrix} 0 \cr 0 \cr \end{matrix}\right]\right\}\)",
    "span\(\left\{\left[\begin{matrix} $a32 \cr $a31 \cr \end{matrix}\right]\right\}\)",
);
$mc->makeLast("none of the above");


TEXT(beginproblem());
$showPartialCorrectAnswers = 0;
BEGIN_TEXT
\{ textbook_ref_exact("Holt Linear Algebra", "4.1","28") \} 
$PAR
Find the null space for \( A = 
\left[\begin{matrix} $a11 & $a12 \cr $a21 & $a22 \cr $a31 & $a32\cr \end{matrix}\right].\)
$PAR
\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}.



END_TEXT
#Context()->normalStrings;

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $mc->correct_ans() ) );


#Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\( A\) is row reduces to 
\(\left[\begin{matrix} $a11 & $a12 \cr 0 & 0 \cr 0 & 0 \cr\end{matrix}\right]\).  The basis of the null space has one element for each column without a leading one in the row reduced matrix.
$BR
Thus \(A{\bf x}={\bf 0} \) has a one dimentional null space, 
$BR
and null\((A)\) is the subspace generated by \(
\left[\begin{matrix} -$a12 \cr $a11 \cr \end{matrix}
\right]\).


END_SOLUTION
#Context()->normalStrings;

ENDDOCUMENT();
