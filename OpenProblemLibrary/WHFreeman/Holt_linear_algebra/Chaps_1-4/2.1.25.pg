# DESCRIPTION
# Solving for values in a system of equations
# ENDDESCRIPTION

##\{ textbook_ref_exact("Holt Linear Algebra", "2.1","25") \}
## DBsubject(Linear algebra)
## DBchapter(Systems of linear equations)
## DBsection(Vector equations)
## Institution(Saint Louis University)
## Author(Mike May)
## MLT(LinCombVectWithParam)
## Level(2)
## TitleText1('Linear Algebra')
## AuthorText1('Holt')
## EditionText1('')
## Section1('2.1')
## Problem1('25')
## KEYWORDS('linear algebra','vectors')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "parserPopUp.pl",
  "MathObjects.pl",
  "freemanMacros.pl",
  "PGasu.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

# make sure we're in the context we want
Context("Numeric");
$v11=random(1,9,1);
$v12=random(-9,9,1);
$v13=random(-9,9,1);
$v21=random(-9,9,1);
$v22=random(1,9,1);
$v23=random(-9,9,1);
if($v11*$v22==$v12*$v21){$v22=-$v22;}
$v31=random(-9,9,1);
$v32=random(-9,9,1);
$v33=random(1,9,1);
if($v11*$v22*$v33+$v21*$v32*$v13+$v31*$v12*$v23-$v13*$v22*$v31-$v23*$v32*$v11-$v33*$v12*$v21==0){$v33=-$v33;}

$a1=random(1,9,1);
$a2=random(1,9,1)*random(-1,1,2);
$a3=random(1,9,1)*random(-1,1,2);

$a=($v32-$a2*$v22)/$a1;
$b=($v33-$a1*$v13)/$a2;
$c=$a1*$v11+$a2*$v21;



TEXT(beginproblem());
$showPartialCorrectAnswers = 0;
BEGIN_TEXT
\{ textbook_ref_exact("Holt Linear Algebra", "2.1","25") \} 
$PAR
Solve for the unknowns in the vector equation below. 
$PAR
\($a1 
\left[\begin{matrix} $v11 \cr a \cr $v13 \cr \end{matrix}\right] 
+$a2
\left[\begin{matrix} $v21 \cr $v22 \cr b \cr \end{matrix}\right]
 =
\left[\begin{matrix} c \cr $v32 \cr $v33 \cr \end{matrix}\right]
\)
$PAR

$PAR
\(a= \)\{ans_rule(10)\}
$PAR
\(b= \)\{ans_rule(10)\}
$PAR
\(c= \)\{ans_rule(10)\}
$PAR

END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS(num_cmp($a));
ANS(num_cmp($b));
ANS(num_cmp($c));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR 
SOLUTION 
$PAR
\[a=($v32-$a2*$v22)/$a1=$a\]
\[b=($v33-$a1*$v13)/$a2=$b\]
\[c=$a1*$v11+$a2*$v21=$c\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
