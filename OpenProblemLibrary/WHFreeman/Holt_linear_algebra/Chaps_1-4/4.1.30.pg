DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "freemanMacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

# make sure we're in the context we want
#Context()->texStrings;
$a11 = random(1,5,1);
$a12 = random(-7,7,1);
$a21 = random(-7,7,1);
$a22 = random(-7,7,1);
if ($a11*$a22==$a21*$a12){$a22=$a22+1};
$a31 = random(-7,7,1);
$a32 = random(-7,7,1);
$b1 = random(1,3,1)*random(-1,1,2);
$b2 = random(1,3,1)*random(-1,1,2);;
$b3=1;
$a13=-$b1*$a11-$b2*$a12;
$a23=-$b1*$a21-$b2*$a22;
$a33=-$b1*$a31-$b2*$a32;




# the arguments of PopUp are [list of answers], 
#    correct answer
$mc = new_multiple_choice();
$mc->qa(
    "What is null\((A)\)?", 
    "span\(\left\{\left[\begin{matrix} $b1 \cr $b2 \cr  1 \cr \end{matrix}\right]\right\}\)"
     );
$mc->extra(
    "\({\mathbb R}^3\)",
    "span\(\left\{\left[\begin{matrix} $a11 \cr $a12 \cr $a13 \cr \end{matrix}\right]\right\}\)",
    "span\(\left\{\left[\begin{matrix} $a11 \cr $a21 \cr $a31 \cr \end{matrix}\right]\right\}\)",
    "span\(\left\{
    \left[\begin{matrix} $a11 \cr $a12 \cr $a13 \cr \end{matrix}\right],
    \left[\begin{matrix} $a21 \cr $a22 \cr $a23 \cr \end{matrix}\right]
    \right\}\)",
    "span\(\left\{\left[\begin{matrix} 0 \cr 0 \cr 0 \cr \end{matrix}\right]\right\}\)",
);
$mc->makeLast("none of the above");


TEXT(beginproblem());
$showPartialCorrectAnswers = 0;
BEGIN_TEXT
\{ textbook_ref_exact("Holt Linear Algebra", "4.1","30") \} 
$PAR
Find the null space for \( A = 
\left[\begin{matrix} $a11 & $a12 & $a13 \cr $a21 & $a22 & $a23 \cr $a31 & $a32 & $a33\cr \end{matrix}\right].\)
$PAR
\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}.



END_TEXT
#Context()->normalStrings;

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $mc->correct_ans() ) );


#Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\( A\) is row reduces to 
\(\left[\begin{matrix} 1 & 0 & $b1 \cr 0 & 1 & $b2 \cr 0 & 0 &0 \cr\end{matrix}\right]\).  The basis of the null space has one element for each column without a leading one in the row reduced matrix.
$BR
Thus \(A{\bf x}={\bf 0} \) has a one dimentional null space, 
$BR
and null\((A)\) is the subspace generated by \(
\left[\begin{matrix} $b1 \cr $b2 \cr 1 \cr \end{matrix}
\right]\).


END_SOLUTION
#Context()->normalStrings;

ENDDOCUMENT();
