DOCUMENT();

loadMacros(
"PGstandard.pl",
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGmorematrixmacros.pl",
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"

);

TEXT(beginproblem());

$c11 = 1;
$c21 = 0;
$c31 = 0;
$c12 = 0;
$c22 = 1;
$c32 = 0;
$c13 = random(-4,-2,1);
$c23 = 0;
$c33 = 0;
$c14 = random(2,5,1);
$c24 = random(1,3,1);
$c34 = 1;
$c15 = random(-1,1,1);
$c25 = 0;
$c35 = random(2,4,1);

$mC = new Matrix(3,5);
$mC->assign(1,1,$c11);
$mC->assign(1,2,$c12);
$mC->assign(1,3,$c13);
$mC->assign(1,4,$c14);
$mC->assign(1,5,$c15);
$mC->assign(2,1,$c21);
$mC->assign(2,2,$c22);
$mC->assign(2,3,$c23);
$mC->assign(2,4,$c24);
$mC->assign(2,5,$c25);
$mC->assign(3,1,$c31);
$mC->assign(3,2,$c32);
$mC->assign(3,3,$c33);
$mC->assign(3,4,$c34);
$mC->assign(3,5,$c35);


$ans1 = -$c13;
$ans2 = 0;
$ans3 = 1;
$ans4 = 0;
$ans5 = 0; 
$ans6 = -$c15 + $c35*$c14;
$ans7 = -$c25 + $c35*$c24;
$ans8 =  0;
$ans9 = -$c35;
$ans10 = 1;

BEGIN_TEXT
Find a basis for the null space of matrix A.
$BR
\{mbox( 'A = ', display_matrix($mC) ) \}
$BR$BR
 \{ mbox( '\( {\rm Basis\ } = \)', '{' , ans_array(5,1,5), ans_array_extension(5,1,5), '}' ) \}
$BR

END_TEXT


ANS(basis_cmp([ [$ans1, $ans2, $ans3, $ans4, $ans5] , [$ans6, $ans7, $ans8, $ans9, $ans10] ]) );

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR$PAR{BBOLD}SOLUTION:${EBOLD} $PAR
Row-reduce the matrix which has the given vectors as columns.
$BR$BR
\(A\) is already row-reduced, thus \(A{\bf x}= {\bf 0}\) has solutions of the form 
$PAR
\[ {\bf x} = s_1 \left [ \begin{array}{c} $ans1 & $ans2 & $ans3 & $ans4 & $ans5 \end{array} \right] + s_2 \left [ \begin{array}{c} $ans6 & $ans7 & $ans8 & $ans9 & $ans10 \end{array} \right] \]
$PAR
so that a basis for the subspace is 
$PAR
\[ \left$LBRACE \left [ \begin{array}{c} $ans1 & $ans2 & $ans3 & $ans4 & $ans5 \end{array} \right], \left [ \begin{array}{c} $ans6 & $ans7 & $ans8 & $ans9 & $ans10 \end{array} \right] \right$RBRACE \]

END_SOLUTION

