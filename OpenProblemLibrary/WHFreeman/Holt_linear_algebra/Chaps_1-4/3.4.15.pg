);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Matrix");
$sample = Matrix([[2,3,-1],[-2,-5,6]]);
do {
do {
$L = Matrix([[1,0,0],
[Compute(random(-9,9)),1,0],
[Compute(random(-9,9)),Compute(random(-9,9)),1]]);

$U = Matrix([[Compute(non_zero_random(-9,9)),Compute(random(-9,9)),Compute(random(-9,9))],
[0,Compute(non_zero_random(-9,9)),Compute(random(-9,9))],
[0,0,Compute(non_zero_random(-9,9))]]);
 
$A = $L * $U;

$n11 = -($A->element(2,1))/($A->element(1,1));
$n12 = -($A->element(3,1))/($A->element(1,1));
} until ($n11 != 0 && $n12 != 0);
$str11 = nicestring([$n11,1],["R_1","R_2"])."&\Rightarrow R_2";
$str12 = nicestring([$n12,1],["R_1","R_3"])."&\Rightarrow R_3";
$E1 = Matrix([1,0,0],[$n11,1,0],[$n12,0,1]);
$A1 = $E1*$A;

$L21 = -$n11;  $L31 = -$n12;
$n21 = -($A1->element(3,2))/($A1->element(2,2));
} until ($n21 != 0);
$L32 = -$n21;
$L1 = "\left[\begin{array}{rrr} 1 & \mathbf{\cdot} & \mathbf{\cdot} \\ $L21 & 1 &  \mathbf{\cdot}  \\ $L31 & $L32 & \mathbf{\cdot} \end{array}\right]";
$str21 = nicestring([$n21,1],["R_2","R_3"])."&\Rightarrow R_3";
$E2 = Matrix([1,0,0],[0,1,0],[0,$n21,1]);
$A2 = $E2*$A1;

$L2 = "\left[\begin{array}{rrr} 1 & \mathbf{\cdot} & \mathbf{\cdot} \\ $L21 & 1 &  \mathbf{\cdot}  \\ $L31 & $L32 & 1\end{array}\right]";

$multians = MultiAnswer($L, $U)->with(
  singleResult => 0,
  checker => sub {
      my ( $correct, $student, $self ) = @_;
      my ( $Lstu, $Ustu ) = @{$student};
      my ( $Lcorrect, $Ucorrect ) = @{$correct};    
      $lower = 1;
      $upper = 1;
      #Check to see if the student L matrix is lower triangular
      unless (($Lstu->element(1,2)==0)&&($Lstu->element(1,3)==0)&&
             ($Lstu->element(2,3)==0)){
          $self->setMessage(1,'Your L matrix is not lower triangular');
          $self->setMessage(2,'The U matrix cannot be checked for accuracy '.
                              'since L does not have the correct format.');
          return[0,0];
          };
      #Check to see if the student L has 1's on the diagonal
      unless (($Lstu->element(1,1)==1)&&($Lstu->element(2,2)==1)&&
             ($Lstu->element(3,3)==1)){
           $self->setMessage(1,'Your L matrix should have ones on the diagonal');
          $self->setMessage(2,'The U matrix cannot be checked for accuracy '.
                              'since L does not have the correct format.');
          return[0,0];
          };
      #Check to see if the student U matrix is in echelon form
      unless(($Ustu->element(2,1)==0)&&($Ustu->element(3,1)==0)&&
             ($Ustu->element(3,2)==0)){
          $self->setMessage(1,'The L matrix cannot be checked for accuracy '.
                              'since U does not have the correct format.');
          $self->setMessage(2,'Your U matrix is not in echelon form.');
          return[0,0];
          };
      #Check to see if they have the right product
      unless($Lstu*$Ustu == $Lcorrect*$Ucorrect){
          $self->setMessage(1,'Your L matrix is in the right format, '.
                              'but you have the wrong product.');
          $self->setMessage(2,'Your U matrix is in echelon form, but you have '.
                              'the wrong product.');
           $lower = 0;
           $upper = 0;
          }
      return [$lower,$upper];
  }
);

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Holt Linear Algebra", "3.4","15") \}
$BR
For this problem enter matrices using bracket notation. So the matrix 
