DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "parserPopUp.pl",
  "MathObjects.pl",
  "freemanMacros.pl",
  "PGasu.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

# make sure we're in the context we want
Context("Numeric");
$v11=random(1,9,1);
$v12=random(-9,9,1);
$v13=random(-9,9,1);
$v21=random(-9,9,1);
$v22=random(1,9,1);
$v23=random(-9,9,1);
if($v11*$v22==$v12*$v21){$v22=-$v22;}
$v31=random(-9,9,1);
$v32=random(-9,9,1);
$v33=random(1,9,1);
if($v11*$v22*$v33+$v21*$v32*$v13+$v31*$v12*$v23-$v13*$v22*$v31-$v23*$v32*$v11-$v33*$v12*$v21==0){$v33=-$v33;}

$a1=random(1,9,1);
$a2=random(1,9,1)*random(-1,1,2);
$a3=random(1,9,1)*random(-1,1,2);

$w11=$a2*$v11+$a1*$v31;
$w12=$a2*$v12+$a1*$v32;
$w13=$a2*$v13+$a1*$v33;



TEXT(beginproblem());
$showPartialCorrectAnswers = 0;
BEGIN_TEXT
\{ textbook_ref_exact("Holt Linear Algebra", "2.1","4") \} 
$PAR
Let 
$PAR
\({\bf u} = 
\left[\begin{matrix} $v11 \cr $v12 \cr $v13 \cr \end{matrix}\right], 
{\bf v} =
\left[\begin{matrix} $v21 \cr $v22 \cr $v23 \cr \end{matrix}\right],
{\bf w} =
\left[\begin{matrix} $v31 \cr $v32 \cr $v33 \cr \end{matrix}\right]
\)
$PAR

$PAR
\{ mbox(
'Compute \($a1 {\bf w}+$a2 {\bf u}=\)',
display_matrix([[ans_rule(10)],[ans_rule(10)],[ans_rule(10)]], 
'align'=>"cc"))\}

$PAR



END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS(num_cmp($w11));
ANS(num_cmp($w12));
ANS(num_cmp($w13));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR 
SOLUTION 
$PAR
$PAR
\[$a1 {\bf w}+$a2 {\bf u}=
\left[\begin{matrix} 
$a1*$v31+$a2*$v11 \cr 
$a1*$v32+$a2*$v12 \cr 
$a1*$v33+$a2*$v12 \cr \end{matrix}
\right]=
\left[\begin{matrix} 
$w11 \cr 
$w12 \cr 
$w13 \cr \end{matrix}
\right]
\]
$PAR
$PAR

END_SOLUTION
Context()->normalStrings;


ENDDOCUMENT();

