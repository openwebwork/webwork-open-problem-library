sub rref {
  my $m = shift(); # dimensions of matrix
  my $n = shift();
  my (@mat) = @_; 
  my $failed = 0;
  
  my $lead = 0;
  while ($lead <= $m) {
    for (my $i = $lead; $i < $m; $i++) {
      my $tmp = $mat[$i][$lead]; 
      if ($tmp == 0) {
        $failed = 1; $i = $m; $lead = $m;
      } else {
        for (my $j = $lead; $j < $n; $j++) {
          $mat[$i][$j] = $mat[$i][$j]/$tmp;
        }
      }
    }
    
    for (my $i = $lead+1; $i < $m; $i++) {
      for (my $j = $lead; $j < $n; $j++) {
        $mat[$i][$j] = $mat[$i][$j] - $mat[$lead][$j];
      }
    }
    $lead++;
  }
  if ($failed == 0) {
    $lead = 0;
    do {
      for (my $i = $lead; $i < $m-1; $i++) {
        for (my $j = $lead + 1; $j < $m; $j++) {
          my $tmp = $mat[$i][$j];
          for (my $k = $j; $k < $n; $k++) {
             $mat[$i][$k] = $mat[$i][$k] - $tmp*$mat[$j][$k];
          }
        }
        $lead = $lead + 1;
      }
    } until ($lead == $m-1);
  }
  return ($failed,@mat);
}


