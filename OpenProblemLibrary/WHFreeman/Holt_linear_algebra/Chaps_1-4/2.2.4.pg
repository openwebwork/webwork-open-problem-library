DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "parserPopUp.pl",
  "MathObjects.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);

# make sure we're in the context we want
Context("Numeric");
# We start by producing the row reduced matrix.
# This is upper triangular
$red11=1;
$red12=random(1,5,1)*random(-1,1,2);
$red13=random(1,5,1)*random(-1,1,2);
$red21=0;
$red22=1;
$red23=random(1,5,1)*random(-1,1,2);
$red31=0;
$red32=0;
$red33=1;

# Next we produce the scalars that will be used in Gauss elimination.
# This is an lower triangular matrix
$m11=random(1,6,1)*random(-1,1,2);
$m12=0;
$m13=0;
$m21=random(1,5,1)*random(-1,1,2);
$m22=random(1,5,1)*random(-1,1,2);
$m23=0;
$m31=random(1,5,1)*random(-1,1,2);
$m32=random(1,5,1)*random(-1,1,2);
$m33=random(1,5,1)*random(-1,1,2);

# We are ready to produce our matrix A.
$A11=$m11*$red11+$m12*$red21+$m13*$red31;
$A12=$m11*$red12+$m12*$red22+$m13*$red32;
$A13=$m11*$red13+$m12*$red23+$m13*$red33;
$A21=$m21*$red11+$m22*$red21+$m23*$red31;
$A22=$m21*$red12+$m22*$red22+$m23*$red32;
$A23=$m21*$red13+$m22*$red23+$m23*$red33;
$A31=$m31*$red11+$m32*$red21+$m33*$red31;
$A32=$m31*$red12+$m32*$red22+$m33*$red32;
$A33=$m31*$red13+$m32*$red23+$m33*$red33;

$a1=random(1,9,1)*random(-1,1,2);
$a2=random(1,9,1)*random(-1,1,2);
$a3=random(1,9,1)*random(-1,1,2);


# the arguments of PopUp are [list of answers], 
#    correct answer
$mc = new_checkbox_multiple_choice();
$mc->qa(
"",
"The vector \(\left[{\begin{matrix}$A11 \cr $A21 \cr $A31 \cr \end{matrix}}\right]\) is in the span.",
"The vector \(\left[{\begin{matrix}$A12 \cr $A22 \cr $A32 \cr \end{matrix}}\right]\) is in the span.",
"The vector \($a1 \left[{\begin{matrix}$A12 \cr $A22 \cr $A32 \cr \end{matrix}}\right]+
$a2 \left[{\begin{matrix}$A11 \cr $A21 \cr $A31 \cr \end{matrix}}\right]\\) is in the span.",
"The vector \($a2\left[{\begin{matrix}$A13 \cr $A23 \cr $A33 \cr \end{matrix}}\right]\) is in the span.",
"The vector \(\left[{\begin{matrix}0 \cr 0 \cr 0 \cr \end{matrix}}\right]\) is in the span.",
"All vectors in \({\mathbb R}^3\) are in the span."
);
$mc->makeLast("We cannot tell which vectors are i the span.");

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;
Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Holt Linear Algebra", "2.2","4") \} 
$PAR
Let 
\({\bf u}_1 = \left[{\begin{matrix}$A11 \cr $A21 \cr $A31 \cr \end{matrix}}\right]\),
\({\bf u}_2 = \left[{\begin{matrix}$A12 \cr $A22 \cr $A32 \cr \end{matrix}}\right]\), and
\({\bf u}_3 = \left[{\begin{matrix}$A13 \cr $A23 \cr $A33 \cr \end{matrix}}\right]\).

$PAR
Select all  of the vectors that are in the span of 
\(\lbrace {\bf u}_1, {\bf u}_2, {\bf u}_3 \rbrace\).  (Check every statement that is correct.)
$PAR
 
$PAR
\{ $mc->print_a() \}
$PAR

END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS( checkbox_cmp( $mc->correct_ans() ) );


Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
Any linear combination of the vectors is in the span.  This always includes the zero vector and the original vectors.  Since the third vector is not in the through through the origin generated by the first two vectors, all vectors in \({\mathbb R}^3\) are in the span.

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
