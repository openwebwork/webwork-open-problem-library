# DESCRIPTION
# Determine the row operator performed. Always multiplying a row by a constant.
# ENDDESCRIPTION

## DBsubject(Linear algebra)
## DBchapter(Matrices)
## DBsection(Row operations)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## Level(2)
## MO(1)
## TitleText1('Linear Algebra')
## AuthorText1('Holt')
## EditionText1('1e')
## Section1('1.2')
## Problem1('11')
## KEYWORDS('linear equations', 'system', 'systems', 'matrices')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
  "parserPopUp.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Matrix");
sub dispMat {
  my $A = shift;
  my @d = $A->dimensions;
  my @a = ();
  my $dA = "\left[\begin{array}{";
  for (my $i = 0; $i < $d[1]; $i++) {
    $dA = $dA."r";
  }
  $dA = $dA."}";
  for (my $i = 0; $i < $d[0]; $i++) {
    for (my $j = 0; $j < $d[1]; $j++) {
      $a[$i][$j] = $A->element($i+1,$j+1);
      if ($j != $d[1] - 1) {
        $dA = $dA." $a[$i][$j] & ";
      } elsif ($j == $d[1] - 1 && $i != $d[0] -1) {
        $dA = $dA." $a[$i][$j] \\";
      } else {
        $dA = $dA." $a[$i][$j]";
      }
    }
  }
  $dA = $dA."\end{array}\right]";
  return ($dA, @a);
}

$A = Matrix([non_zero_random(-3,3), non_zero_random(-2,2), non_zero_random(-9,9)], [random(-1,1,2)*random(10,17), non_zero_random(5,5), non_zero_random(-9,9)], [random(-1,1,2)*random(7,14), non_zero_random(-9,9), non_zero_random(-7,7)]);
($d1,$d2) = $A->dimensions;
$A = $A->wwMatrix;
$A->assign(random(1,$d1),random(1,$d2),0);
$A = Matrix($A);
($dA,@a) = dispMat($A);
$row = random(1,$d1);
$c = random(2,4)*random(-1,1,2);

$B = Matrix([0,0,0],[0,0,0],[0,0,0])->wwMatrix;
for ($i = 0; $i < $d1; $i++) {
  for ($j = 0; $j < $d2; $j++) {
    $B->assign($i+1,$j+1,$a[$i][$j]*$c) if ($i == $row -1);
    $B->assign($i+1,$j+1,$a[$i][$j]) if ($i != $row - 1);
  } 
}
$B = Matrix($B);
($dB,@b) = dispMat($B);

Context()->variables->add(R1 => ["Real", TeX=>"R_1"], R2 => ["Real", TeX=>"R_2"], R3 => ["Real", TeX=>"R_3"]);
$rd = "R".$row;
$rstrlhs = nicestring([$c],[$rd]);
$lhs = Formula($rstrlhs);
$rhs = Formula($rd);
$pop = PopUp(["select", "⇒", "⇔"], "⇒");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
The matrix on the right results after performing a single row operation on the matrix on the left.
$PAR
\[ $dA  \sim $dB \]
$PAR
Identify the row operation. Use ${BBOLD}R1${EBOLD}, ${BBOLD}R2${EBOLD}, and ${BBOLD}R3${EBOLD} to represent the rows \(R_1\), \(R_2\), and \(R_3\).
$PAR
Answer: \{ans_rule(10)\} \{$pop->menu()\} \{ans_rule(10)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($lhs->cmp());
ANS($pop->cmp());
ANS($rhs->cmp());


###########################################################################
# solution
###########################################################################
Context()->texStrings;
BEGIN_SOLUTION
${BBOLD}SOLUTION:${EBOLD}
\($lhs \Rightarrow $rhs\)
END_SOLUTION
Context()->normalStrings;

COMMENT('Created in 2013.
$BR
Desc: Determine the row operator performed. Always multiplying a row by a constant.');
ENDDOCUMENT();