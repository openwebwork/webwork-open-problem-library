# DESCRIPTION
# Determine the row operator performed. Of form a R_i + R_j => R_j.
# ENDDESCRIPTION

## DBsubject(Linear algebra)
## DBchapter(Matrices)
## DBsection(Row operations)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(sing_row_opp)
## Level(2)
## MO(1)
## TitleText1('Linear Algebra')
## AuthorText1('Holt')
## EditionText1('1e')
## Section1('1.2')
## Problem1('12')
## KEYWORDS('linear equations', 'system', 'systems', 'matrices')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Matrix");
sub dispMat {
  my $A = shift;
  my @d = $A->dimensions;
  my @a = ();
  my $dA = "\left[\begin{array}{";
  for (my $i = 0; $i < $d[1]; $i++) {
    $dA = $dA."r";
  }
  $dA = $dA."}";
  for (my $i = 0; $i < $d[0]; $i++) {
    for (my $j = 0; $j < $d[1]; $j++) {
      $a[$i][$j] = $A->element($i+1,$j+1);
      if ($j != $d[1] - 1) {
        $dA = $dA." $a[$i][$j] & ";
      } elsif ($j == $d[1] - 1 && $i != $d[0] -1) {
        $dA = $dA." $a[$i][$j] \\";
      } else {
        $dA = $dA." $a[$i][$j]";
      }
    }
  }
  $dA = $dA."\end{array}\right]";
  return ($dA, @a);
}

$A = Matrix([non_zero_random(-5,5), non_zero_random(-5,5), non_zero_random(-5,5), non_zero_random(-5,5)], [non_zero_random(-5,5),non_zero_random(-5,5),non_zero_random(-5,5), non_zero_random(-5,5)]);
($d1,$d2) = $A->dimensions;
$A = $A->wwMatrix;
$A->assign(random(1,$d1),random(1,$d2),0);
$A = Matrix($A);
($dA,@a) = dispMat($A);
$row1 = random(1,$d1);
do {$row2 = random(1,$d1)} until ($row2 != $row1);
$c = random(2,4)*random(-1,1,2);

$B = Matrix([0,0,0,0],[0,0,0,0])->wwMatrix;
for ($i = 0; $i < $d1; $i++) {
  for ($j = 0; $j < $d2; $j++) {
    $B->assign($i+1,$j+1,$a[$i][$j] + $c*$a[$row2-1][$j]) if ($i == $row1 -1);
    $B->assign($i+1,$j+1,$a[$i][$j]) if ($i != $row1 - 1);
  } 
}
$B = Matrix($B);
($dB,@b) = dispMat($B);

Context()->variables->add(R1 => ["Real", TeX=>"R_1"], R2 => ["Real", TeX=>"R_2"], R3 => ["Real", TeX=>"R_3"]);
$rd1 = "R".$row1;
$rd2 = "R".$row2;
$rstrlhs = nicestring([$c,1],[$rd2,$rd1]);
$lhs = Formula($rstrlhs);
$rhs = Formula($rd1);
$pop = PopUp(["select", "-->", "<-->"], "-->");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
The matrix on the right results after performing a single row operation on the matrix on the left.
$PAR
\[ $dA  \text{ row op produces: } $dB \]
$PAR
Identify the row operation. Use ${BBOLD}R1${EBOLD} and ${BBOLD}R2${EBOLD} to represent the rows \(R_1\) and \(R_2\).  For example, if the operation were "add 2 times row 4 to row 6" then the answer would be "\(2*R4+R6 \longrightarrow R6\)".  If it were "swap row 4 with row 6" the answer would be "\(R4 \longleftrightarrow R6\)".
$PAR
Answer: \{ans_rule(10)\} \{$pop->menu()\} \{ans_rule(10)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($lhs->cmp());
ANS($pop->cmp());
ANS($rhs->cmp());


###########################################################################
# solution
###########################################################################
Context()->texStrings;
BEGIN_SOLUTION
${BBOLD}SOLUTION:${EBOLD}
\($lhs \longrightarrow $rhs\)
END_SOLUTION
Context()->normalStrings;

COMMENT('Of form a c*R_i + R_j => R_j.');
ENDDOCUMENT();
