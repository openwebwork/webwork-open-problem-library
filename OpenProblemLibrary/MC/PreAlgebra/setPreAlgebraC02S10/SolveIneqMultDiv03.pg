##DESCRIPTION
##  Middle School problem:
##ENDDESCRIPTION


## Solving Inequalities Multiplication Division
## ProblemTester('Laura Travis')
## Publisher('Prentice Hall')
## DBsubject(Algebra)
## DBchapter(Linear equations and functions)
## DBsection(Linear inequalities)
## Date(9/18/2012)
## Institution(Mississippi College)
## Author(John Travis)
## MLT(simplify)
## MLTleader(1)
## Level(2)
## MO(1)
## TitleText1('Pre-Algebra')
## AuthorText1('')
## EditionText1('')
## Section1('.')
## Problem1('')
## KEYWORDS('prealgebra','common core','inequality')

########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGgraphmacros.pl",
   "contextInequalities.pl",
   "AnswerFormatHelp.pl",
   "PGchoicemacros.pl",
   "problemRandomize.pl",
);

TEXT(beginproblem());
$refreshCachedImages = 1;

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Inequalities-Only");
Context()->flags->set(formatStudentAnswer=>'parsed');

@r = NchooseK(4,4);

$a = random(-8,-2,2);
$b = non_zero_random(-96,96,24);
$bdiva = $b/$a;

$exp[0] = "\( $a x < $b \)";
$ans[0] = Compute(" x > $bdiva " || "$bdiva < x" );

$exp[1] = "\( $a x > $b \)";
$ans[1] = Compute(" x < $bdiva " || "$bdiva > x" );

$exp[2] = "\( $a x \le $b \)";
$ans[2] = Compute(" x >= $bdiva " || "$bdiva <= x" );

$exp[3] = "\( $a x \ge $b \)";
$ans[3] = Compute(" x <= $bdiva " || "$bdiva >= x" );

##############################################################
#
#  Text
#
#

##    to disable arithmetic operations in the answer.  Student must simplify.

Context()-texStrings;

BEGIN_TEXT

Simplify each inequality.  
 ( \{ AnswerFormatHelp("inequalities") \} )
$PAR
$BCENTER
$BR
1. $exp[$r[0]] has the solution \{ans_rule(20)\} 
$PAR
2. $exp[$r[1]] has the solution \{ans_rule(20)\} 
$PAR
3. $exp[$r[2]] has the solution \{ans_rule(20)\} 
$PAR
4. $exp[$r[3]] has the solution \{ans_rule(20)\} 
$PAR

$ECENTER

END_TEXT

Context("Numeric");

Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $ans[$r[0]]->cmp);
ANS( $ans[$r[1]]->cmp);
ANS( $ans[$r[2]]->cmp);
ANS( $ans[$r[3]]->cmp);

$showHint = 3;
BEGIN_HINT
Divide both sides by $a.  How does that affect the inequality?
END_HINT

$showHint = 6;
BEGIN_HINT
Remember--dividing by a negative causes the inequality to change directions.
END_HINT



ENDDOCUMENT();        
