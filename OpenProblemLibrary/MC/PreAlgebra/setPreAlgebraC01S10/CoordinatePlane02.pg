ANS( $popup[0]->cmp() );
ANS( $popup[1]->cmp() );
ANS( $popup[2]->cmp() );
ANS( $popup[3]->cmp() );
ANS( $popup[4]->cmp() );
ANS( $popup[5]->cmp() );
ANS( $popup[6]->cmp() );


