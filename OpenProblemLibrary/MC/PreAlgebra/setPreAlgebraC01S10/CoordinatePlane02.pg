DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "AnswerFormatHelp.pl",
   "PGchoicemacros.pl",
   "PGgraphmacros.pl",
   "problemRandomize.pl",
   "parserPopUp.pl",
);

TEXT(beginproblem());
$refreshCachedImages = 1;

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Point");
 
# Create some pointers for shuffling the points
@a = NchooseK(7,7);
@names = ("A", "B", "C", "D", "E", "F", "G");
@s = @names[@a];  #scrambled points


##   Create a random point in each quadrant
$p1x = random(-13,-5,1);
$p1y = random(5,13,1);
$P1 = Point($p1x,$p1y);
$popup[$a[0]] = PopUp(["?", "I", "II", "III", "IV","axis"], "II");
#  shifted pointer since we must start with zero.

$p2x = random(-13,-5,1);
$p2y = random(-13,-5,1);
$P2 = Point($p2x,$p2y);
$popup[$a[1]] = PopUp(["?", "I", "II", "III", "IV","axis"], "III");

$p3x = random(5,13,1);
$p3y = random(-13,-5,1);
$P3 = Point($p3x,$p3y);
$popup[$a[2]] = PopUp(["?", "I", "II", "III", "IV","axis"], "IV");

$p4x = random(5,13,1);
$p4y = random(5,13,1);
$P4 = Point($p4x,$p4y);
$popup[$a[3]] = PopUp(["?", "I", "II", "III", "IV","axis"], "I");

$p5x = non_zero_random(-2,2,1);
$p5y = non_zero_random(-2,2,1);
$P5 = Point($p5x,$p5y);
if ($p5x>0) {
  if ($p5y>0) {
    $q5 = "I";
  }
  else {
    $q5 = "IV";
  }
}
else {
  if ($p5y>0) {
    $q5 = "II";
  }
  else {
    $q5 = "IV=III";
  }
}
$popup[$a[4]] = PopUp(["?", "I", "II", "III", "IV","axis"], $q5);

$p6x = non_zero_random(-13,13,1);
$p6y = 0;
$P6 = Point($p6x,$p6y);
$popup[$a[5]] = PopUp(["?", "I", "II", "III", "IV","axis"], "axis");

$p7x = 0;
$p7y = non_zero_random(-13,13,1);
$P7 = Point($p7x,$p7y);
$popup[$a[6]] = PopUp(["?", "I", "II", "III", "IV","axis"], "axis");

#######       Draw the points on a coordinate plane
$gr = init_graph(-15,-15,15,15, 
size=>[500,500],
axes=>[0,0],
);

$shift = 1;
$gr -> stamps( closed_circle($p1x,$p1y,'blue') );
  $gr->lb( new Label($p1x,$p1y+$shift,$s[0], 'black','center','middle'));
$gr -> stamps( closed_circle($p2x,$p2y,'blue') );
  $gr->lb( new Label($p2x,$p2y+$shift,$s[1], 'black','center','middle'));
$gr -> stamps( closed_circle($p3x,$p3y,'blue') );
  $gr->lb( new Label($p3x,$p3y+$shift,$s[2], 'black','center','middle'));
$gr -> stamps( closed_circle($p4x,$p4y,'blue') );
  $gr->lb( new Label($p4x,$p4y+$shift,$s[3], 'black','center','middle'));
$gr -> stamps( closed_circle($p5x,$p5y,'blue') );
  $gr->lb( new Label($p5x,$p5y+$shift,$s[4], 'black','center','middle'));
$gr -> stamps( closed_circle($p6x,$p6y,'blue') );
  $gr->lb( new Label($p6x,$p6y+$shift,$s[5], 'black','center','middle'));
$gr -> stamps( closed_circle($p7x,$p7y,'blue') );
  $gr->lb( new Label($p7x,$p7y+$shift,$s[6], 'black','center','middle'));

######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Identify the proper quadrants for each of the points shown on the given coordinate system.
$PAR
$BCENTER
\{ image(insertGraph($gr), width=>600, height=>600, tex_size=>250); \}
$PAR

A = \{ $popup[0]->menu() \}
$BR
B = \{ $popup[1]->menu() \}
$BR
C = \{ $popup[2]->menu() \}
$BR
D = \{ $popup[3]->menu() \}
$BR
E = \{ $popup[4]->menu() \}
$BR
F = \{ $popup[5]->menu() \}
$BR
G = \{ $popup[6]->menu() \}
$ECENTER

END_TEXT
Context()->normalStrings;

$showHint = 3;
BEGIN_HINT
Quadrant I has both x and y both positive.
$BR
Quadrant II has x negative and y positive.
$BR
Quadrant III has both x  and y negative.
$BR
Quadrant IV has x positive and y negative.
$BR
Any point that has zero for either x or y is on an axis. 
END_HINT


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $popup[0]->cmp() );
ANS( $popup[1]->cmp() );
ANS( $popup[2]->cmp() );
ANS( $popup[3]->cmp() );
ANS( $popup[4]->cmp() );
ANS( $popup[5]->cmp() );
ANS( $popup[6]->cmp() );


