########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGchoicemacros.pl",
   "problemRandomize.pl",
   "parserAssignment.pl",
);

TEXT(beginproblem());
$refreshCachedImages = 1;

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric")->variables->are(x=>"Real");
parser::Assignment->Allow;

@r = NchooseK(4,4);

$a1 = random(-9,-3,1);
$b1 = random(11,21,2);
$bmina1 = $b1-$a1;
$a2 = random(3,9,1);
$b2 = random(11,21,2);
$bmina2 = $b2-$a2;
$a3 = random(-9,-3,1);
$b3 = random(-21,-11,2);
$bmina3 = $b3-$a3;
$a4 = random(3,9,1);
$b4 = random(-21,-11,2);
$bmina4 = $b4-$a4;

$exp[0] = "\( $a1 + x = $b1 \)";
$ans[0] = Formula(" x = $bmina1 " );

$exp[1] = "\( $a2 + x = $b2 \)";
$ans[1] = Formula(" x = $bmina2 " );

$exp[2] = "\( x + $a3 = $b3 \)";
$ans[2] = Formula(" x = $bmina3 " );

$exp[3] = "\( x + $a4 = $b4 \)";
$ans[3] = Formula(" x = $bmina4 " );

##############################################################
#
#  Text
#
#

##    to disable arithmetic operations in the answer.  Student must simplify.

Context()-texStrings;

BEGIN_TEXT

Solve each equality and express your answer in the form \(x =\)___
$PAR

1. $exp[$r[0]] has the solution \{ans_rule(20)\} 
$PAR
2. $exp[$r[1]] has the solution \{ans_rule(20)\} 
$PAR
3. $exp[$r[2]] has the solution \{ans_rule(20)\} 
$PAR
4. $exp[$r[3]] has the solution \{ans_rule(20)\} 
$PAR


END_TEXT

Context("Numeric");

Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $ans[$r[0]]->cmp);
ANS( $ans[$r[1]]->cmp);
ANS( $ans[$r[2]]->cmp);
ANS( $ans[$r[3]]->cmp);


$showHint = 3;
BEGIN_HINT
For each problem, you will either need to subtract or add the opposite of the number on the left to the right side.
END_HINT


ENDDOCUMENT();        