DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "problemRandomize.pl",
  "contextFraction.pl",
  "unionTables.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

$refreshCachedImages = 1;

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Fraction-NoDecimals");

$factor1 = random(3,7,1);
$top1 = random(2,9,1)*$factor1;
$bottom1 = ($top1+random(1,4,1))*$factor1;
$ans1 = Compute("$top1/$bottom1");

$factor2 = random(3,9,1);
$top2 = random(24,30,2)*$factor2;
$bottom2 = ($top2+random(1,4,1))*$factor2;
$ans2 = Compute("$top2/$bottom2");


##############################################################
#
#  Text
#
#

Context()->texStrings;

BEGIN_TEXT
Write each ratio as a fraction in simplest form:
$PAR
$BCENTER

\( $top1 \) out of \( $bottom1 \) is the fraction \{ans_rule(10)\} 
$PAR
\( $top2 \) out of \( $bottom2 \) is the fraction \{ans_rule(10)\} 

$ECENTER
$PAR
$BITALIC
Your fraction should be entered in the form \(a/b\) and needs be be reduced.
$EITALIC
END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#
#

ANS( $ans1->cmp(
  studentsMustReduceFractions=>1,
  reduceFractions=>1,
  allowMixedNumbers=>0, 
  ) 
);
ANS( $ans2->cmp(
  studentsMustReduceFractions=>1,
  reduceFractions=>1,
  allowMixedNumbers=>0, 
  ) 
);

ENDDOCUMENT();
