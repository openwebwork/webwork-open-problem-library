DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGchoicemacros.pl",
   "problemRandomize.pl",
   "parserAssignment.pl",
);

TEXT(beginproblem());
$refreshCachedImages = 1;

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric")->variables->are(r=>"Real");
parser::Assignment->Allow;

@r = NchooseK(4,4);

$atop = random(-9,-3,1);
$abot = random(11,19,1);
$btop = random(3,9,1);
$bbot = random(11,19,1);
$mult = ($btop*$abot)/($atop*$bbot);

$exp = "\( \frac{$atop}{$abot} r = \frac{$btop}{$bbot} \)";
$ans = Formula("r=$mult");

##############################################################
#
#  Text
#
#

Context()-texStrings;

BEGIN_TEXT

Solve and express your answer in the form \(r =\)___
$PAR

The equation $exp has the solution \{ans_rule(20)\} 

END_TEXT

Context("Numeric");

Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $ans->cmp);

$showHint = 3;
BEGIN_HINT
Take the coefficient of the variable term to the other side.
END_HINT


ENDDOCUMENT();        