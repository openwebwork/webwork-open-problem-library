DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "problemRandomize.pl",
   "PGgraphmacros.pl",
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

$refreshCachedImages = 1;

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

# sides of smaller triangle
$a = random(6,11,1);
$b = $a-random(1,4,1);

# tan(acos($b/$a));

$sine = ((1-($b/$a)**2))**(1/2);

# sides of larger triangle
$mult = random(2,5,1);
$c = $a*$mult;
$d = $b*$mult;

$vert = $sine*$c + 4;
$horiz = $d+$b+6;

$gr = init_graph(-3,-2,$horiz,$vert, size=>[400,200]);

# smaller triangle
  $gr->moveTo(0,0);
  $gr->lineTo($b,0,"blue",2);
  $gr->lb(new Label($b/2,-0.5,$b,'black','center','middle'));
  $gr->lineTo($b,$sine*$a,"blue",2);
  $gr->lb(new Label($b/2,$sine*$a/2+1,$a,'black','center','middle'));
  $gr->lineTo(0,0,"blue",2);
  $gr->stamps( closed_circle(0,0,'red') );
#  $gr->fillRegion([1,1,"blue"]);

# bigger triangle
  $offset = $b+2;
  $gr->moveTo($offset,0);
  $gr->lineTo($offset+$d,0,"blue",2);
  $gr->lb(new Label($offset+$d/2,-0.5,'x','black','center','middle'));
  $gr->lineTo($offset+$d,$sine*$c,"blue",2);
  $gr->lb(new Label($offset+$d/2,$sine*$c/2+1,$c,'black','center','middle'));
  $gr->lineTo($offset,0,"blue",2);
  $gr->stamps( closed_circle($offset,0,'red') );
#  $gr->fillRegion([$offset+0.1,0.1,"blue"]);


##############################################################
#
#  Text
#
#

Context()->texStrings;

BEGIN_TEXT
The triangles below are similar.  Find the missing length and round to the nearest tenth if necessary.
$PAR
$BCENTER
\{ image(insertGraph($gr), width=>400, height=>200, tex_size=>200); \}
$PAR

\( x = \) \{ans_rule(15)\}

$ECENTER

END_TEXT
Context()->normalStrings;

$showHint = 5;

BEGIN_HINT

END_HINT

BEGIN_SOLUTION

END_SOLUTION

##############################################################
