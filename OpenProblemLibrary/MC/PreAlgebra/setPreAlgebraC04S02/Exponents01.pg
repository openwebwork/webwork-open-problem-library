DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "parserPopUp.pl",
   "problemRandomize.pl",
   "PGchoicemacros.pl",
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#


Context()->variables->add(a => "Real");

$a2 = "a a";
$a3 = "a a a";
$a4 = "a a a a";
$a5 = "a a a a a";
$a6 = "a a a a a a";
$a7 = "a a a a a a a";

@r = NchooseK(5,5);

$exp[$r[0]] = "\(a^2\)";
$popup[$r[0]] = PopUp(["?", "$a2", "$a3", "$a4", "$a5", "$a6", "$a7", "1"], $a2);

$exp[$r[1]] = "\(a^3\)";
$popup[$r[1]] = PopUp(["?", "$a2", "$a3", "$a4", "$a5", "$a6", "$a7", "1"], $a3);

$exp[$r[2]] = "\(a^4\)";
$popup[$r[2]] = PopUp(["?", "$a2", "$a3", "$a4", "$a5", "$a6", "$a7", "1"], $a4);

$exp[$r[3]] = "\(a^0\)";
$popup[$r[3]] = PopUp(["?", "$a2", "$a3", "$a4", "$a5", "$a6", "$a7", "1"], 1);

$exp[$r[4]] = "\(a^6\)";
$popup[$r[4]] = PopUp(["?", "$a2", "$a3", "$a4", "$a5", "$a6", "$a7", "1"], $a6);

##############################################################
#
#  Text
#
#

# Context()->operations->undefine('^','**');


BEGIN_TEXT
$BCENTER
$exp[0] =\{ $popup[0]->menu() \}
$PAR
$exp[1] =\{ $popup[1]->menu() \}
$PAR
$exp[2] =\{ $popup[2]->menu() \}
$PAR
$exp[3] =\{ $popup[3]->menu() \}
$PAR
$exp[4] =\{ $popup[4]->menu() \}

$ECENTER

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( Compute("$popup[0]")->cmp() );
ANS( Compute("$popup[1]")->cmp() );
ANS( Compute("$popup[2]")->cmp() );
ANS( Compute("$popup[3]")->cmp() );
ANS( Compute("$popup[4]")->cmp() );

ENDDOCUMENT();        