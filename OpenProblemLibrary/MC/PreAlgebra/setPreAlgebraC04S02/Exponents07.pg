DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "problemRandomize.pl",
   "PGchoicemacros.pl",
);

TEXT(beginproblem());

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric");

Context()->variables->add(a => "Real");
Context()->variables->add(b => "Real");

$const1 = random(-9,-2,1);
$powa = random(3,6,1);
$const2 = random(2,9,1);
$powb = random(3,6,1);

$exp = "$const1";
for($i = 1; $i <= $powa; $i++) {
  $exp = $exp . ' a';
}
$exp = $exp . $const2;
for($i = 1; $i <= $powb; $i++) {
  $exp = $exp . ' b';
}

$const = $const1*$const2;
$ans = Compute("$const*a^$powa*b^$powb");

##############################################################
#
#  Text
#
#

Context()->texStrings;

BEGIN_TEXT
Simplify the following by combining all constants and combining the a and b terms using exponential notation.
$PAR
$BCENTER
\( $exp \) =   \{ ans_rule(20) \}
$ECENTER

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $ans->cmp() );


$showHint =3;
BEGIN_HINT
Remember aaa = a^3, for example.
END_HINT

