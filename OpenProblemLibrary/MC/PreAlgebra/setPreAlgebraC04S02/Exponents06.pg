DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "problemRandomize.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

$base = 3;
$base_alpha = 'three';

$power = 4;
$power_alpha = 'fourth';

$b[0] = "two";
$b[1] = "three";
$b[2] = "four";
$b[3] = "five";
$b[4] = "six";
$b[5] = "seven";

$p[0] = "second";
$p[1] = "third";
$p[2] = "fourth";
$p[3] = "fifth";
$p[4] = "sixth";
$p[5] = "seventh";

@r = NchooseK(6,2);
@s = NchooseK(6,2);

Context("Numeric");
Context()->flags->set(reduceConstants=>0);

$exp1 = "$b[$r[0]] tenths to the $p[$s[0]] power";
$base = ($r[0]+2)/10;
$power = $s[0]+2;
$ans1 = Formula("$base^$power");

$exp2 = "Negative $b[$r[1]] to the $p[$s[1]] power";
$base = -1*($r[1]+2);
$power = $s[1]+2;
$ans2 = Formula("($base)^$power");

##############################################################
#
#  Text
#
#

Context()->operators->undefine('*');


BEGIN_TEXT
Write the following using exponential notation only (do not simplify):
$PAR
$BCENTER
$exp1 = \{ ans_rule(10) \}
$PAR
$exp2 = \{ ans_rule(10) \}
$PAR
$ECENTER

$BITALIC
Use the ^ symbol for powers and express fractions as decimal numbers only.
$EITALIC
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

#  Need to also allow parenthesis around the base or a fraction as the base.
ANS( str_cmp($ans1) );
ANS( str_cmp($ans2) );

#ANS($ans1->eval->cmp)
#ANS($ans2->eval->cmp)

$showHint = 2;
BEGIN_HINT
For example 9 cubed is 9^3.  Also, remember that you will need parenthesis if the base is negative.
END_HINT

ENDDOCUMENT();        
