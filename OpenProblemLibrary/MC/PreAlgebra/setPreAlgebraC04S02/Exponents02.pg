DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "problemRandomize.pl",
   "PGchoicemacros.pl",
);

TEXT(beginproblem());

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric");

Context()->variables->add(a => "Real");
Context()->variables->add(b => "Real");

$powa = random(3,6,1);
$powb = random(3,6,1);

$ans = Compute("a**$powa*b**$powb");

##############################################################
#
#  Text
#
#

Context()->operators->undefine('^','**');

Context()->texStrings;

BEGIN_TEXT
Write out the following as successive multiplication with the correct number of terms in a and b.
$PAR
\(a^$powa b^$powb\) =   \{ ans_rule(20) \}

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $ans->cmp() );


$showHint =3;
BEGIN_HINT
Remember \(a^2 = a a\).  Higher powers will require more terms.
END_HINT
ENDDOCUMENT();        