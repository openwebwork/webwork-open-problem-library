DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "problemRandomize.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

@r = NchooseK(3,3);

Context()->variables->add(t => 'Real');
Context()->variables->add(s => 'Real');

$a = random(2,6,1);
$b = random(7,11,1);
$apb = $a + $b;
$t3p1 = 3*$b+random(1,4,1);

$exp[$r[0]] = "\( t + $a = $apb \)";
$popup[$r[0]] = PopUp(["?", "Solution", "Not Solution", "Still Open"], "Solution");

$exp[$r[1]] = "\( 3 \times t = $t3p1 \)"; 
# $ans2 = Compute("3*$b = $t3p1");
$popup[$r[1]] = PopUp(["?", "Solution", "Not Solution", "Still Open"], "Not Solution");

$exp[$r[2]] = "\($b + t = s + $a \)";
# $ans3 = Compute("$b+$b = s + $a");
$popup[$r[2]] = PopUp(["?", "Solution", "Not Solution", "Still Open"], "Still Open");

##############################################################
#
#  Text
#
#

Context()->texStrings;

BEGIN_TEXT
Determine whether \( t = $b \) a solution to any of the open sentences below. 
$PAR
$exp[0]  \{ $popup[0]->menu() \} 
$PAR
$exp[1]  \{ $popup[1]->menu() \} 
$PAR
$exp[2]  \{ $popup[2]->menu() \}.

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

# ANS( $ans1->cmp() );
ANS( $popup[0]->cmp() );
# ANS( $ans2->cmp() );
ANS( $popup[1]->cmp() );
# ANS( $ans3->cmp() );
ANS( $popup[2]->cmp() );


$showHint = 3;
BEGIN_HINT
For each expression, replace t with the value \( $b \) and simplify.
END_HINT

ENDDOCUMENT();        
