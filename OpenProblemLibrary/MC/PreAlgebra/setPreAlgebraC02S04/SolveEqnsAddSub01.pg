DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "problemRandomize.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context()->variables->add(y => 'Real');

$a = random(2,6,1);
$b = random(7,11,1);
$c = random(2,20,1);
$d = random(4,7,1);
$apb = $a + $b;


@r = NchooseK(6,6);

$exp[$r[0]]  = "'\( $a + $b = $apb \) ";
$popup[$r[0]] = PopUp(["?", "True", "False", "Open"], "True");

$exp[$r[1]]  = "\( $c + x = $a \) ";
$popup[$r[1]] = PopUp(["?", "True", "False", "Open"], "Open");

$exp[$r[2]]  = "\( $b \times y = $c \times x \)";
$popup[$r[2]] = PopUp(["?", "True", "False", "Open"], "Open");

$exp[$r[3]]  = "\( $b \times $d = $c \)";
$popup[$r[3]] = PopUp(["?", "True", "False", "Open"], "False");

$exp[$r[4]]  = "\( $a - $b = $apb \)";
$popup[$r[4]] = PopUp(["?", "True", "False", "Open"], "False");

$exp[$r[5]]  = "\( $d - $c + $a = -$c + $a + $d \)";
$popup[$r[5]] = PopUp(["?", "True", "False", "Open"], "True");
##############################################################
#
#  Text
#
#

Context()->texStrings;

BEGIN_TEXT
Determine if each expression is True, False or Open:
$PAR

\{ $popup[0]->menu() \}
$exp[0] 
$PAR
\{ $popup[1]->menu() \}
$exp[1] 
$PAR
\{ $popup[2]->menu() \}
$exp[2] 
$PAR
\{ $popup[3]->menu() \}
$exp[3]  
$PAR
\{ $popup[4]->menu() \}
$exp[4] 
$PAR
\{ $popup[5]->menu() \}
$exp[5] 


END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $popup[0]->cmp() );
ANS( $popup[1]->cmp() );
ANS( $popup[2]->cmp() );
ANS( $popup[3]->cmp() );
ANS( $popup[4]->cmp() );
ANS( $popup[5]->cmp() );


$showHint = 3;
BEGIN_HINT
True means evaluating both sides of the expression gives the same answer
$BR
False means evaluating both sides of the expression gives different answers.
$BR
Open means there is not enough information (such as an unspecified variable) to determine whether the expression is True or False.
END_HINT


ENDDOCUMENT();        
