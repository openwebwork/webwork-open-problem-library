DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "parserPopUp.pl",
   "problemRandomize.pl",
  "PGchoicemacros.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   #"PGcourse.pl",      # Customization file for the course
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context()->variables->add(y => 'Real');

$a = random(2,6,1);
$b = random(7,11,1);
$c = random(2,20,1);
$d = random(4,7,1);
$apb = $a + $b;

$exp  = " \( $a \) minus the opposite of \( $b \) is \( $apb \) ";
$ans1  = Compute("$a");
$popup1 = PopUp(["?", "+", "-", "x","/"], "-");
$ans2  = Compute("-1*$b");
$popup2 = PopUp(["?", "=", ">", "<"], "=");
$ans3  = Compute("$apb");
$popup3 = PopUp(["?", "True", "False", "Open"], "True");

##############################################################
#
#  Text
#
#

Context()->texStrings;

BEGIN_TEXT
Write the mathematical word sentence as a mathematical expression:
$PAR
$BCENTER
$exp
$PAR
\{ ans_rule(2) \} \{ $popup1->menu() \} \{ ans_rule(2) \} \{ $popup2->menu() \} \{ ans_rule(2) \} 
$ECENTER
The expression is \{ $popup3->menu() \}.

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $ans1->cmp() );
ANS( $popup1->cmp() );
ANS( $ans2->cmp() );
ANS( $popup2->cmp() );
ANS( $ans3->cmp() );
ANS( $popup3->cmp() );


$showHint = 3;
BEGIN_HINT
"The opposite" means the negative of a number.
END_HINT


ENDDOCUMENT();        