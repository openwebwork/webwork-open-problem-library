## AuthorText1('')
## EditionText1('')
## Section1('.')
## Problem1('')
## KEYWORDS('prealgebra','common core','inequality')

########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "problemRandomize.pl",
  "parserAssignment.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$refreshCachedImages = 1;

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric")->variables->are(r=>"Real");
parser::Assignment->Allow;

@r = NchooseK(4,4);

$a = random(-8.9,-3.1,0.03);
$b = random(11.1,21.9,0.04);
$bmina = $b-$a;
$aminb = $a-$b;

$exp[0] = "\( $a + r = $b \)";
$ans[0] = Compute("r=$bmina");

$exp[1] = "\( r - $a = -$b \)";
$ans[1] = Compute("r=$aminb");

$exp[2] = "\( -$a - r = -$b \)";
$ans[2] = Compute("r=$bmina");

$exp[3] = "\( $a - r = $b \)";
$ans[3] = Compute("r=$aminb");

##############################################################
#
#  Text
#
#

Context()-texStrings;

BEGIN_TEXT

Solve each equality and express your answer in the form \(r =\)___
$PAR

1. The equation $exp[$r[0]] has the solution \{ans_rule(20)\} 
$PAR
2. The equation $exp[$r[1]] has the solution \{ans_rule(20)\} 
$PAR
3. The equation $exp[$r[2]] has the solution \{ans_rule(20)\} 
$PAR
4. The equation $exp[$r[3]] has the solution \{ans_rule(20)\} 
$PAR



END_TEXT

Context("Numeric");

Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $ans[$r[0]]->cmp);
ANS( $ans[$r[1]]->cmp);
ANS( $ans[$r[2]]->cmp);
ANS( $ans[$r[3]]->cmp);

$showHint = 3;
BEGIN_HINT
For each problem, you will either need to take $a by adding or \{-$a\} to the other side by subtracting.
END_HINT


ENDDOCUMENT();        
