########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGchoicemacros.pl",
   "problemRandomize.pl",
   "parserAssignment.pl",
);

TEXT(beginproblem());
$refreshCachedImages = 1;

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric")->variables->are(y=>"Real");
parser::Assignment->Allow;

@r = NchooseK(4,4);

$a = random(2.1,8.9,0.2);
$b = random(13.1,27.9,0.2);
$bmina = $b-$a;
$aminb = $a-$b;

$exp[0] = "\( $a + y = $b \)";
$ans[0] = Formula("y=$bmina");
$exp[1] = "\( y - $a = -$b \)";
$ans[1] = Formula("y=$aminb");

$exp[2] = "\( -$a - y = -$b \)";
$ans[2] = Formula("y=$bmina");

$exp[3] = "\( $a - y = $b \)";
$ans[3] = Formula("y=$aminb");

##############################################################
#
#  Text
#
#

##    to disable arithmetic operations in the answer.  Student must simplify.

Context()-texStrings;

BEGIN_TEXT

Solve each equality and express your answer in the form \(y =\)___

$PAR

1. The equation $exp[$r[0]] has the solution \{ans_rule(20)\} 
$PAR
2. The equation $exp[$r[1]] has the solution \{ans_rule(20)\} 
$PAR
3. The equations $exp[$r[2]] has the solution \{ans_rule(20)\} 
$PAR
4. The equation $exp[$r[3]] has the solution \{ans_rule(20)\} 
$PAR


END_TEXT

Context("Numeric");

Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $ans[$r[0]]->cmp);
ANS( $ans[$r[1]]->cmp);
ANS( $ans[$r[2]]->cmp);
ANS( $ans[$r[3]]->cmp);

$showHint = 3;
BEGIN_HINT
For each problem, you will either need to take $a by subtracting or -$a to the other side by adding.
END_HINT


ENDDOCUMENT();        