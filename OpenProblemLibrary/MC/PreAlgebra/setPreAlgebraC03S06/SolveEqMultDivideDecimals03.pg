########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGchoicemacros.pl",
   "problemRandomize.pl",
   "parserAssignment.pl",
);

TEXT(beginproblem());
$refreshCachedImages = 1;

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric")->variables->are(a=>"Real",b=>"Real",c=>"Real",d=>"Real",);
parser::Assignment->Allow;

@r = NchooseK(4,4);

$a1 = random(-8.9,-3.1,0.1);
$mult1 = random(3,14,1);
$b1 = $a1*$mult1;

$a2 = random(3,9,0.1);
$mult2 = random(3,14,1);
$b2 = $a2*$mult2;

$a3 = random(-9,-3,0.1);
$mult3 = random(-14,-3,1);
$b3 = $a3*$mult3;

$a4 = random(3,9,0.1);
$mult4 = random(-14,-3,1);
$b4 = $a4*$mult4;

$exp[0] = "\( $a1 a = $b1 \)";
$ans[0] = Formula(" a = $mult1 " );

$exp[1] = "\( $a2 b = $b2 \)";
$ans[1] = Formula(" b = $mult2 " );

$exp[2] = "\( $a3 c = $b3 \)";
$ans[2] = Formula(" c = $mult3 " );

$exp[3] = "\( $a4 d = $b4 \)";
$ans[3] = Formula(" d = $mult4 " );

##############################################################
#
#  Text
#
#

##    to disable arithmetic operations in the answer.  Student must simplify.

Context()-texStrings;

BEGIN_TEXT

Solve each equality and express your answer in the form variable\(=\)___
$PAR

1. $exp[$r[0]] has the solution \{ans_rule(20)\} 
$PAR
2. $exp[$r[1]] has the solution \{ans_rule(20)\} 
$PAR
3. $exp[$r[2]] has the solution \{ans_rule(20)\} 
$PAR
4. $exp[$r[3]] has the solution \{ans_rule(20)\} 
$PAR


END_TEXT

Context("Numeric");

Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $ans[$r[0]]->cmp);
ANS( $ans[$r[1]]->cmp);
ANS( $ans[$r[2]]->cmp);
ANS( $ans[$r[3]]->cmp);


$showHint = 3;
BEGIN_HINT
For each problem, you will either need to subtract or add the opposite of the number on the left to the right side.
END_HINT


ENDDOCUMENT();        