DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "problemRandomize.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

$ans1 = random(5,15,1)+non_zero_random(-0.9,0.9,0.1);
$ans2 = random(5,15,1)+non_zero_random(-0.9,0.9,0.1);

$disp1 = $ans1+non_zero_random(-0.045,0.045,0.001);
$disp2 = $ans2+non_zero_random(-0.045,0.045,0.001);

#  Finally, the printed question.
$exp = "\($disp1 + $disp2\)";
$sum =$ans1+$ans2;

##############################################################
#
#  Text
#
#

Context()->texStrings;

BEGIN_TEXT
Estimate the sum by rounding each of the given data values to the nearest tenth.
$BCENTER
$BR
$exp
\( \approx \) 
\{ ans_rule(5) \} \(+\) \( $ans2 \) = \{ ans_rule(5) \} 
$ECENTER


END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( Compute("$ans1")->cmp() );
ANS( Compute("$sum")->cmp() );

ENDDOCUMENT();        
