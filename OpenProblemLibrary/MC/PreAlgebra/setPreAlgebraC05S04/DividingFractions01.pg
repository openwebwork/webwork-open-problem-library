DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGchoicemacros.pl",
   "problemRandomize.pl",
   "contextFraction.pl",
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#


Context("Numeric");
Context("Fraction-NoDecimals");
Context()->flags->set(reduceFractions=>0);

$atop = random(19,25,1);
$abot = random(5,7,1);
$btop = random(11,18,1);
$bbot = $abot;

$ans = Compute("($atop*$bbot)/($abot*$btop)");

Context()-> operators->undefine("-","+");

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

Add the following and express your answer as a single fraction.  No decimals or mixed fractions.

$PAR
$BCENTER
\(\displaystyle\frac{$atop}{$abot} \div \frac{$btop}{$bbot} = \) \{ans_rule(25)\}
$ECENTER
$PAR
$BITALIC
Remember, to enter a fraction of the form \(\frac{a}{b}\), type a / b.
$EITALIC
END_TEXT
Context()->normalStrings;

$showHint = 3;
BEGIN_HINT
Reciprocal then ???
$BR
END_HINT

##############################################################
#
#  Answers
#
#

ANS( $ans->cmp() );


ENDDOCUMENT();        