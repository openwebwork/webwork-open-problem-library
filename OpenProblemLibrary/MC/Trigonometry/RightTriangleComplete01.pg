########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "unionTables.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$c = random(5.1,7.9,2);
$A = random(23.3,43.3,0.4);

$B = 90-$A;
$a = $c*sin($A*pi/180);
$b = $c*cos($A*pi/180);

Context("Numeric");
Context()->flags->set(
  tolerance => 0.001,
  tolType => "absolute",
);

Context()->functions->disable("Trig");

BEGIN_TEXT
Consider a right triangle with hypotenuse \(c = $c\) and angle \(A = $A\).  
$PAR
Using a calculator, determine the other angle and the remaining sides of the triangle.  Express your answers using at least three decimal places.
$PAR
a = \{ ans_rule(10) \}
$PAR
b = \{ ans_rule(10) \}
$PAR
B = \{ ans_rule(10) \}

END_TEXT

    ANS( Compute("$a")->cmp() );
    ANS( Compute("$b")->cmp() );
    ANS( Compute("$B")->cmp() );

ENDDOCUMENT();        
