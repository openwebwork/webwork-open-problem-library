########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",    
   "MathObjects.pl",
   "parserPopUp.pl",
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 0;

##############################################################
#
#  Setup
#
#

$y = non_zero_random(-9,9,1);
$x = non_zero_random(-9,9,1);
if ($x>0 && $y>0) {
  $x = -$x;
}
$r2 = $x**2+$y**2;
$r = sqrt($r2);

if ($x>0) {  
  $popupSIN = PopUp(["?", "+", "-"], "-");
  $popupCOS = PopUp(["?", "+", "-"], "+");
  $popupTAN = PopUp(["?", "+", "-"], "-");
  $tan = "-";
  $quad = "IV";
}
elsif ($y>0) {
  $popupSIN = PopUp(["?", "+", "-"], "+");
  $popupCOS = PopUp(["?", "+", "-"], "-");
  $popupTAN = PopUp(["?", "+", "-"], "-");
  $tan = "-";
  $quad = "II";}
else {
  $popupSIN = PopUp(["?", "+", "-"], "-");
  $popupCOS = PopUp(["?", "+", "-"], "-");
  $popupTAN = PopUp(["?", "+", "-"], "+");
  $tan = " ";
  $quad = "III";
}

##############################################################
#
#  Text
#
#

Context()->texStrings;

BEGIN_TEXT
Suppose \(\tan(\alpha) = $tan\frac{\{abs($y)\}}{\{abs($x)\}} \) and \(\alpha \) terminates in $BBOLD Quadrant $quad$EBOLD.
$PAR
Without simplifying any square roots, 
$PAR
\(\sin(\alpha) =\) \{ $popupSIN->menu() \} \{ans_rule(15)\}
$PAR
\(\cos(\alpha) =\) \{ $popupCOS->menu() \} \{ans_rule(15)\}
$PAR
\(\cot(\alpha) =\) \{ $popupTAN->menu() \} \{ans_rule(15)\}
$PAR
\(\sec(\alpha) =\) \{ $popupCOS->menu() \} \{ans_rule(15)\}
$PAR
\(\csc(\alpha) =\) \{ $popupSIN->menu() \} \{ans_rule(15)\}

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $popupSIN->cmp() );   ANS( Compute("abs($y/sqrt($r2))")->cmp() );
ANS( $popupCOS->cmp() );   ANS( Compute("abs($x)/sqrt($r2)")->cmp() );
ANS( $popupTAN->cmp() );   ANS( Compute("abs($x/$y)")->cmp() );
ANS( $popupCOS->cmp() );   ANS( Compute("sqrt($r2)/abs($x)")->cmp() );
ANS( $popupSIN->cmp() );     ANS( Compute("sqrt($r2)/abs($y)")->cmp() );

ENDDOCUMENT();        