# Date("11/14/2012")

DOCUMENT();      

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl", 
"MathObjects.pl",
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

Context()->variables->add(A => "Real" );
Context()->variables->add(B => "Real" );
Context()->variables->add(C => "Real" );

#  This problem asks students to input a set of obvious textbook formulas.

@r = NchooseK(8,8);

$quest[$r[1]] = "\( \sin(A + B) = \)";
$ans[$r[1]] = "sin(A) cos(B) + cos(A) sin(B)";
$quest[$r[2]] = "\( \sin(A - B) = \)";
$ans[$r[2]] = "sin(A) cos(B) - cos(A) sin(B)";
$quest[$r[3]] = "\( \cos(A - B) = \)";
$ans[$r[3]] = "cos(A) cos(B) + sin(A) sin(B)";
$quest[$r[4]] = "\( \cos(A + B) = \)";
$ans[$r[4]] = "cos(A) cos(B) - sin(A) sin(B)";
$quest[$r[5]] = "\( \sin(2C) = \)";
$ans[$r[5]] = "2 sin(C) cos(C)";
$quest[$r[6]] = "\( \cos(2C) = \)";
$ans[$r[6]] = "cos^2(C) - sin^2(C)";
$quest[$r[7]] = "\( \tan(2C) = \)";
$ans[$r[7]] = "2 tan(C)/(1-tan^2(C))";
$quest[$r[0]] = "\( \tan(x/2) = \)";
$ans[$r[0]] = "(1-cos(x))/sin(x)";


BEGIN_TEXT

Complete the following formulas:

$BCENTER
$PAR $quest[0] \{ ans_rule(30) \}
$PAR $quest[1] \{ ans_rule(30) \}
$PAR $quest[2] \{ ans_rule(30) \}
$PAR $quest[3] \{ ans_rule(30) \}
$PAR $quest[4] \{ ans_rule(30) \}
$PAR $quest[5] \{ ans_rule(30) \}
$PAR $quest[6] \{ ans_rule(30) \}
$PAR $quest[7] \{ ans_rule(30) \}
$ECENTER
$PAR
$PAR
$BITALIC
Be certain to use the specified variables for each formula.
$EITALIC
END_TEXT

for ($k=0;$k<8;$k++) {
  ANS( Formula("$ans[$k]")->cmp() );
}

BEGIN_SOLUTION
$PAR $quest[0] $ans[0]
$PAR $quest[1] $ans[1]
$PAR $quest[2] $ans[2]
$PAR $quest[3] $ans[3]
$PAR $quest[4] $ans[4]
$PAR $quest[5] $ans[5]
$PAR $quest[6] $ans[6]
$PAR $quest[7] $ans[7]
END_SOLUTION

ENDDOCUMENT(); 