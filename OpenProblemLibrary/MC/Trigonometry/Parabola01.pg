DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 0;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$a = non_zero_random(-8,8,2); 
$h = random(-9,-3,1);
$neg_h = -$h;
$k = random(2,8,1);
if ($a>0) {
  $direction = "Up";
}
else {
  $direction = "Down";
}

Context("Point");

$vertex = Point($h,$k);
$popup = PopUp(["?", "Up", "Down", "Flat"], $direction);

##############################################################
#
#  Text
#
#

BEGIN_TEXT

The equation of a parabola is given by \(y = $a(x+$neg_h)^2 + $k\).
$PAR
The vertex of the parabola is given by = \{ans_rule(5)\}
$PAR
The direction in which the parabola curves away from the vertex = \{ $popup->menu() \}

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $vertex->cmp );
ANS( $popup->cmp() );


ENDDOCUMENT();        
