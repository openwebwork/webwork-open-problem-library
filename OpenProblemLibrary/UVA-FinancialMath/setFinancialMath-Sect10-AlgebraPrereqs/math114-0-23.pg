);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x=non_zero_random(-4,4,1);
$y=non_zero_random(-4,4,1);
$b1 = 5*$x + 2*$y ;
$b2 = 7*$x + 3*$y;

BEGIN_TEXT
Use the elimination method to find all solutions of the system
\[
\begin{array}{l}
        5x+2y = $b1, \\
        7x+3y = $b2. 
\end{array}
\]
Your answer is
$BR
\(x=\) \{ans_rule(25) \}
$BR
\(y=\) \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = $x;
$ans2 = $y;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

