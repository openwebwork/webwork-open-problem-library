DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$s = random(60,80,1);
$ip = random(16,20,1);
$i = 0.01*$ip;
$rp = random(7,12,1);
$r = 0.01*$rp;
$str = $s + non_zero_random(-6,6,1);

$su = $s*(1+$i);
$sd = $s*(1-$i);
$suu = $s*(1+$i)**2;
$sdd = $s*(1-$i)**2;
$sud = $s*(1+$i)*(1-$i);

$fuu = max($str - $suu , 0);
$fud = max($str - $sud , 0);
$fdd = max($str - $sdd , 0);

$delu = ($fuu - $fud)/($suu - $sud);
$fuE = $su*$delu - ($suu*$delu - $fuu)*exp(-$r*(1/2));
$fu = max($fuE, $str - $su );

$deld = ($fud - $fdd)/($sud - $sdd);
$fdE = $sd*$deld - ($sud*$deld - $fud)*exp(-$r*(1/2));
$fd = max($fdE, $str - $sd );

$del = ($fu - $fd)/($su - $sd);
$f = $s*$del - ($su*$del - $fu)*exp(-$r*(1/2));
$f = max($f, $str - $s );

#find European answer

$delE = ($fuE - $fdE)/($su - $sd);
$fE = $s*$delE - ($su*$delE - $fuE)*exp(-$r*(1/2));

#check to ensure answer is not identical to European answer

while ($fE-$f==0){

$s = random(60,80,1);
$ip = random(16,20,1);
$i = 0.01*$ip;
$rp = random(7,12,1);
$r = 0.01*$rp;
$str = $s + non_zero_random(-6,6,1);

$su = $s*(1+$i);
$sd = $s*(1-$i);
$suu = $s*(1+$i)**2;
$sdd = $s*(1-$i)**2;
$sud = $s*(1+$i)*(1-$i);

$fuu = max($str - $suu , 0);
$fud = max($str - $sud , 0);
$fdd = max($str - $sdd , 0);

$delu = ($fuu - $fud)/($suu - $sud);
$fuE = $su*$delu - ($suu*$delu - $fuu)*exp(-$r*(1/2));
$fu = max($fuE, $str - $su );

$deld = ($fud - $fdd)/($sud - $sdd);
$fdE = $sd*$deld - ($sud*$deld - $fud)*exp(-$r*(1/2));
$fd = max($fdE, $str - $sd );

$del = ($fu - $fd)/($su - $sd);
$f = $s*$del - ($su*$del - $fu)*exp(-$r*(1/2));
$f = max($f, $str - $s );

#find European answer

$delE = ($fuE - $fdE)/($su - $sd);
$fE = $s*$delE - ($su*$delE - $fuE)*exp(-$r*(1/2));

}

# Present the text.

TEXT(EV2(<<EOT));
Suppose that a stock price is currently $s dollars,
and it is known that at the end of each of the next two six-month periods,
the price will be either
$ip percent higher or $ip percent lower than at the beginning of the period.
Find the value of an American put option on the
stock that expires a year from now, and has a strike price of
$str dollars.  Assume that no arbitrage opportunities exist, and a
risk-free interest rate of $rp percent.

$BR

Answer = \{ &ans_rule(30) \} dollars. $BR

EOT

$ans = $f;
ANS(num_cmp($ans, format => '%0.3f',tol=>0.001 ) );


ENDDOCUMENT();        # This should be the last executable line in the problem.
