DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,3,1);
$b = random(3,6,1);

TEXT(EV2(<<EOT));

Evaluate the definite integral:
$BR
$PAR
   \( \displaystyle{ \int_{-1}^{$a} e^{$b x} \,dx} = \)
   \{ans_rule(35) \}
$BR
$BR

EOT

$ans = (exp($a*$b)-exp(-$b))/$b;
ANS(num_cmp($ans));

ENDDOCUMENT();
