DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(10,20,1);
$a2 = $a1;
$a3 = $a1;
$a4 = random(5,25,1);
$b1 = $a1+1;
$c1 = $a1+3;
$a5 = random($b1,$c1,1);
$b2 = $a1-3;
$c2 = $a1-1;
$a6 = random($b2,$c2,1);
$b3 = $a1+4;
$c3 = $a1+6;
$a7 = random($b3,$c3,1);
$b4 = $a1-6;
$c4 = $a1-4;
$a8 = random($b4,$c4,1);

@data = ($a1, $a2, $a3, $a4, $a5, $a6, $a7, $a8);
@slice = NchooseK(8,8);
@sdata = @data[@slice];

$mode = $a1;
$mean = ($a1 + $a2 + $a3 + $a4 + $a5 + $a6 + $a7 + $a8)/8;
$median = $a1;

BEGIN_TEXT
$BR

Calculate the mode, mean, and median of the following data: 

$BR $BR

\[ $sdata[0], \ $sdata[1], \ $sdata[2], \ $sdata[3], \ $sdata[4], \ $sdata[5], \ $sdata[6], \ $sdata[7] \]

Mode = \{ans_rule(10)\} $BR

Mean = \{ans_rule(10)\} $BR

Median = \{ans_rule(10)\} $BR

END_TEXT

ANS(num_cmp($mode));
ANS(num_cmp($mean));
ANS(num_cmp($median));

ENDDOCUMENT();       # This should be the last executable line in the problem.
