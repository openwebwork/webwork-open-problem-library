loadMacros('PGstandard.pl', 'PGML.pl', 'PGchoicemacros.pl', 'PGgraphmacros.pl', 'PGcourse.pl');

$showPartialCorrectAnswers = 1;

@freq = (
random(1,10),
random(1,10),
random(5,15),
random(10,20),
random(10,20),
random(5,15));
$total = 0; 
$total += $_ for (@freq); 

@rel_freq = map { $_ / $total } @freq; 

