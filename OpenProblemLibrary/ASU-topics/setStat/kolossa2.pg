DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(10,20,1);
$a2 = $a1;
$a3 = $a1;
$a4 = random(5,25,1);
$b1 = $a1+1;
$c1 = $a1+3;
$a5 = random($b1,$c1,1);
$b2 = $a1-3;
$c2 = $a1-1;
$a6 = random($b2,$c2,1);
$a7 = 999;
$b4 = $a1-6;
$c4 = $a1-4;
$a8 = random($b4,$c4,1);

@data = ($a1, $a2, $a3, $a4, $a5, $a6, $a7, $a8);
@slice = NchooseK(8,8);
@sdata = @data[@slice];

$mode = $a1;
$mean = ($a1 + $a2 + $a3 + $a4 + $a5 + $a6 + $a7 + $a8)/8;
$median = $a1;

$mc = new_multiple_choice();

$mc->qa("Which measure of center does not work well here?",
"Mean");
$mc->extra("Median", "Mode");
$mc->makeLast("All of the above");

BEGIN_TEXT
$BR

Calculate the mode, mean, and median of the following data: $BR

\[ $sdata[0], \ $sdata[1], \ $sdata[2], \ $sdata[3], \ $sdata[4], \ $sdata[5], \ $sdata[6], \ $sdata[7] \]

Mode = \{ans_rule(10)\} $BR

Mean = \{ans_rule(10)\} $BR

Median = \{ans_rule(10)\} $BR $BR

$BR$HR$BR
\{ $mc->print_q \}
\{ $mc->print_a \}


END_TEXT

ANS(num_cmp($mode));
ANS(num_cmp($mean));
ANS(num_cmp($median));
ANS(radio_cmp($mc->correct_ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.
