DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT($BEGIN_ONE_COLUMN);
TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$y1=random(5, 20, 1);
$y2=random(21, 50 , 1);
$y3=random(51, 80 ,1);
$y4=random(81,100, 1);
$y5=random(101, 120, 1);

TEXT(EV2(<<EOT));
The position of a cat running from a dog down a dark alley is
given by the values of the table.
EOT

@row1_1= ("\(t\) (seconds)", "0", "1", "2", "3", "4", "5");
@row1_2= ("\(s\) (feet)", 0, $y1, $y2, $y3, $y4, $y5);

$x=random(1, 4);
$y=$row1_2[($x+1)];

BEGIN_TEXT
$BCENTER
\{&begintable(scalar(@row1_1)+1)\}
\{&row(@row1_1)\}
\{&row(@row1_2)\}
\{&endtable()\}
$ECENTER
END_TEXT

@row2_1=("x1");
$i=0;
for ($i=0; $i<=5; $i++) {
    unless ($i==$x) {
        push(@row2_1, $i);
    }
}

TEXT(
EV2("$BR $BR A.  Find the average velocity for the time period beginning
when \(t=2\) and lasting "),
match_questions_list("3 s","2 s", "1 s")
);

@answer=();
$answer[0]=($y5-$y2)/3;
$answer[1]=($y4-$y2)/2;
$answer[2]=($y3-$y2);

BEGIN_TEXT
$BR $BR 
B. Estimate the instantaneous velocity when \(t=2\)
by finding the average velocity from \(t=1\) to \(t=3\):
\{  ans_rule( 10) \}
END_TEXT


ANS(num_cmp([@answer], relTol=>.1));
ANS(num_cmp("($y3-$y1)/2"));

TEXT($END_ONE_COLUMN);
ENDDOCUMENT();        # This should be the last executable line in the problem.
