DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",

  "PGcourse.pl"
);

TEXT(beginproblem());
$showpartialcorrectanswers = 1;

$a = random(2, 6, 0.2);
$b = random(2.1,7,0.2);
$c = random(2,7,1);
$d = random(3,9,1);
$f = random(-12,-2,1);

Context("Numeric");
$func = Compute("$a x^2 + $b x - $c");
$df = $func->D;
$dfd = $df->eval(x => $d);
$dff = $df->eval(x => $f);

Context()->texStrings;
BEGIN_TEXT
Suppose that \( f(x) = $func \).
Evaluate each of the following:
$BR
$BR
\( f'($d) \) = \{ans_rule(10) \}
$BR
$BR
\( f'($f) \) = \{ans_rule(10) \}
END_TEXT

ANS($dfd->cmp);
ANS($dff->cmp);

ENDDOCUMENT();
