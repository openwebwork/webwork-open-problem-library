DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showpartialcorrectanswers = 1;

$a = non_zero_random(-12, 13, 2);
$b = random(-9,15,2);
$c1 = random(2,12,2);
$c2 = random(-13,-3,2);
$c3 = random(2,12,2);
$c4 = random(3,13,2);
$c5 = random(2,12,2);
$c6 = random(3,13,2);
$c7 = random(2,12,2);
$c8 = random(3,13,2);
$c9 = random(-12,-2,1);
$c10 = random(3,13,2);
$c11 = non_zero_random(-12,12,2);
$c12 = non_zero_random(-12,12,2);

TEXT(EV2(<<EOT));
Let \(f\) and \(g\) be functions that satisfy
\( f'(2) = $a \) and \( g'(2) = $b\).  Find \(h'(2)\)
for each function \(h\) given below:
$BR
$BR
(A) \(h(x) = $c1 f(x)\).
$PAR
\( h'(2) \) = \{ans_rule(10) \}
$BR
$BR
(B) \(h(x) = $c2 g(x)\).
$PAR
\( h'(2) \) = \{ans_rule(10) \}
$BR
$BR
(C) \(h(x) = $c3 f(x) + $c4 g(x)\).
$PAR
\( h'(2) \) = \{ans_rule(10) \}
$BR
$BR
(D) \(h(x) = $c5 g(x) - $c6 f(x)\).
$PAR
\( h'(2) \) = \{ans_rule(10) \}
$BR
$BR
(E) \(h(x) = $c7 f(x) + $c8 g(x) ? {$c11}\).
$PAR
\( h'(2) \) = \{ans_rule(10) \}
$BR
$BR
(F) \(h(x) = $c9 g(x) - $c10 f(x) ? {$c12} x\).
$PAR
\( h'(2) \) = \{ans_rule(10) \}
$BR

EOT

@ans = (num_cmp($a*$c1), num_cmp($b*$c2), num_cmp($a*$c3 + $b*$c4),
        num_cmp($b*$c5 - $a*$c6), num_cmp($a*$c7 + $b*$c8),
        num_cmp($b*$c9 - $a*$c10 + $c12));
ANS(@ans);

ENDDOCUMENT();
