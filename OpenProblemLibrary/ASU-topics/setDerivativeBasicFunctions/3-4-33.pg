DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl"
);

TEXT(beginproblem());
Context("Numeric");
$showpartialcorrectanswers = 1;

$a = random(2, 13, 1);
$b = random(2,7,1);
$c = random(2,7,1);
$d = random(3,9,1);
$f = random(-12,-2,1);

BEGIN_TEXT
Suppose that \( f(x) = $a x^2 - $b x + $c \).
Evaluate each of the following:
$BR
$BR
\( f'($d) \) = \{ans_rule(10) \}
$BR
END_TEXT

$ans = 2*$a*$d - $b;
ANS(num_cmp($ans));

BEGIN_TEXT
\( f'($f) \) = \{ans_rule(10) \}
$BR
END_TEXT

$ans = Compute("2*$a*$f - $b");
ANS($ans->cmp);


ENDDOCUMENT();
