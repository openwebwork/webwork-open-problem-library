DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showpartialcorrectanswers = 1;

$a = random(4, 14, 2);

TEXT(EV2(<<EOT));
Find \( \displaystyle{\frac{d}{dx}(x^{$a})}\).
$PAR
\( \displaystyle{\frac{d}{dx}(x^{$a})}\) = \{ans_rule(30) \}
$BR
EOT

$ans = "($a)*(x**($a-1))";
ANS(fun_cmp($ans));

ENDDOCUMENT();
