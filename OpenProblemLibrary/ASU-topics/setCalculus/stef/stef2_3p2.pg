DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');

$m = random(2,4,1);
$x = random(1,6,1);
$a = random(1,9,1);
$b = random(0,5,1)+$m*$x;

BEGIN_TEXT
Let \(f(x) =
            \begin{cases}
              -\frac{$a}{x+$x}, &\text{if}\ x< -$x\\
              $m x+$b, &\text{if}\ x> -$x
              \end{cases}
\)
$BR$BR
Calculate the following limits.
$BR$BR
\( \displaystyle{\lim_{x\to -$x^-}f(x)=} \) \{ans_rule(15)\} \{ AnswerFormatHelp("limits") \}
END_TEXT

$ans1 = Compute("Infinity");
ANS($ans1->cmp);

BEGIN_TEXT
\( \displaystyle{\lim_{x\to -$x^+}f(x)=} \) \{ans_rule(15)\} \{ AnswerFormatHelp("limits") \}
END_TEXT

$ans2 = Compute("-$m*$x+$b");
ANS($ans2->cmp);

BEGIN_TEXT
\( \displaystyle{\lim_{x\to -$x}f(x)=} \) \{ans_rule(15)\} \{ AnswerFormatHelp("limits") \}
END_TEXT

$ans3 = Compute("DNE");
ANS($ans3->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
