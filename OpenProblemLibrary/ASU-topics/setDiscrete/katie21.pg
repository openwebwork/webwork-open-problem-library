DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$first = new_checkbox_multiple_choice();
$sec = new_checkbox_multiple_choice();
$third = new_checkbox_multiple_choice();
$fourth = new_checkbox_multiple_choice();

#$tf = new_pop_up_select_list();   #For popups!

#Question and matching correct answers

$first -> qa (
"(a) \( a\) is older than \(b \)",
"transitive",
"irreflexive",
"antisymmetric"
);

#Some incorrect answers

$first -> extra(
"reflexive",
"symmetric",
);

$sec -> qa(
"(b) \( a\) and \(b \) have a common grandparent",
"reflexive",
"symmetric"
);

$sec -> extra(
"transitive",
"irreflexive",
"antisymmetric"
);

$third -> qa(
"(c) \( a\) has the same first name as \(b \)",
"reflexive",
"transitive",
"symmetric"
);

$third -> extra(
"antisymmetric",
"irreflexive"
);

$fourth -> qa(
"(d) \( a\) and  \(b \) were born on the same day",
"reflexive",
"symmetric",
"transitive"
);

$fourth -> extra(
"irreflexive",
"antisymmetric"
);

BEGIN_TEXT

$PAR
Given the following relations on the set of all people. Check ALL correct answers from the following lists: $BR $BR
\{ $first -> print_q \}
$PAR
\{ $first -> print_a \}
$PAR
\{ $sec -> print_q \}
$PAR
\{ $sec -> print_a \}
$PAR
\{ $third -> print_q \}
$PAR
\{ $third -> print_a \}
$PAR
END_TEXT

ANS(checkbox_cmp( $first -> correct_ans ) );
ANS(checkbox_cmp( $sec -> correct_ans ) );
ANS(checkbox_cmp( $third -> correct_ans ) );

BEGIN_TEXT
$PAR
\{ $fourth -> print_q \}
$PAR
\{ $fourth -> print_a \}
$PAR
END_TEXT



ANS(checkbox_cmp( $fourth -> correct_ans ) );

ENDDOCUMENT();        # This should be the last executable line in the problem.;
