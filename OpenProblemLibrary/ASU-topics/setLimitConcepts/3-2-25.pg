DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,6);
$b = random(3,8);
$c = random(3,8);
$d = random(2,5);

BEGIN_TEXT
Evaluate the limit
\[ \lim_{ x \rightarrow $a } \frac{$b x}{$c + x^$d}\]
If the limit does not exist enter DNE.
$BR$BR
Limit = \{ans_rule(25) \}
END_TEXT

ANS(Compute(($b*$a)/($c + $a**$d))->cmp());
