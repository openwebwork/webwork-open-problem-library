DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGasu.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$NO_SPACE = '@{}';

$a11 = non_zero_random(-10,10,1);
$a12 = random(-10,10,1);
$a21 = random(-10,10,1);
$a22 = non_zero_random(-10,10,1);
$a31 = non_zero_random(-10,10,1);
$a32 = non_zero_random(-10,10,1);

$b1 = non_zero_random(-10,10,1);
$b2 = non_zero_random(-10,10,1);

$ans1 = $a11 * $b1 + $a12 * $b2 ;
$ans2 = $a21 * $b1 + $a22 * $b2 ;
$ans3 = $a31 * $b1 + $a32 * $b2 ;

BEGIN_TEXT

If
\[ A = \left[ \begin{array}{cc}
\{join("& ",$a11,$a12 ) \}\cr
\{join("& ",$a21,$a22 ) \}\cr
\{join("& ",$a31,$a32 ) \}\cr 
\end{array} \right] \quad\mbox{  and  } \quad
B = \left[ \begin{array}{c} 
$b1 \cr
$b2 \cr
\end{array} \right] \]


then
$BCENTER
\{ mbox(
'\( A B = \)',
display_matrix([[ans_rule(5)],[ans_rule(5)],[ans_rule(5)]],
'align'=>"c"))
\}
$ECENTER

END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));



ENDDOCUMENT();       # This should be the last executable line in the problem.
