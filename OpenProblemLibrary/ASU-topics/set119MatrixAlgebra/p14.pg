DOCUMENT() ;        

loadMacros(
"PGasu.pl",
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGdiffeqmacros.pl",
"extraAnswerEvaluators.pl"
) ;
############

TEXT(beginproblem());
$showPartialCorrectAnswers = 1 ;

$alpha = non_zero_random(-6,6);
$a = non_zero_random(-6,6);
$gamma = random(-6,6);

$b11 = random(-3,3);
$b12 = random(-3,3);
$b22 = random(-3,3);
$b21 = ($alpha -1)*($b22+2*$b12)-$alpha*$gamma-2*$b11;

$c13 = $alpha -1;
$na = -$a;
if ($gamma != 0) {$ngamma = -$gamma;}
else {$ngamma = $gamma;}

BEGIN_TEXT
Determine the value(s) of  \(x \)  such that
\[ 
\left[ \begin{array}{ccc}
x & 2 & 1 
\end{array}\right]
  \left[ \begin{array}{ccc}
$a      & $ngamma  & $na \\
$ngamma & $b11        & $b12  \\
$na & $b21 & $b22
\end{array} \right]
 \left[ \begin{array}{c}
x \\
-1 \\
$c13
\end{array}\right] = 0
\]

$BR
\( x \) = \{ ans_rule(30) \}
$BR
$BBOLD Note: $EBOLD
If there is more than one value write them separated by commas.
$BR

END_TEXT


$x1=$gamma/$a;
$x2=$alpha;
ANS(number_list_cmp("$x1,$x2"));


ENDDOCUMENT() ;        
