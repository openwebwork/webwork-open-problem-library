DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGasu.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl", 
"PGgraphmacros.pl",
"PGmatrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$NO_SPACE = '@{}';

$a11 = non_zero_random(-10,10,1);
$a12 = non_zero_random(-10,10,1);
$a21 = non_zero_random(-10,10,1);
$a22 = random(-10,10,1);

$b11 = random(-10,10,1);
$b12 = non_zero_random(-10,10,1);
$b21 = non_zero_random(-10,10,1);
$b22 = non_zero_random(-10,10,1);

$mult = random(2,5,1);

$ans11 = $mult*($a11 * $b11 + $a12 * $b21) ;
$ans12 =$mult*( $a11 * $b12 + $a12 * $b22) ;
$ans21 = $mult*($a21 * $b11 + $a22 * $b21) ;
$ans22 = $mult*($a21 * $b12 + $a22 * $b22) ;



BEGIN_TEXT

If
\[ A = \left[ \begin{array}{cc}
\{join("& ",$a11,$a12 ) \}\cr
\{join("& ",$a21,$a22 ) \}\cr
\end{array} \right] \quad \mbox{  and } \quad
B = \left[ \begin{array}{cc} 
\{join("& ",$b11,$b12 ) \}\cr
\{join("& ",$b21,$b22 ) \}\cr
\end{array} \right] \]

then

$BCENTER
\{ mbox(
'\( A($mult B) = \)',
display_matrix([[ans_rule(5),ans_rule(5)]
,[ans_rule(5),ans_rule(5)]],
'align'=>"cc"))
\}
$ECENTER
END_TEXT

ANS(num_cmp($ans11));
ANS(num_cmp($ans12));
ANS(num_cmp($ans21));
ANS(num_cmp($ans22));



ENDDOCUMENT();       # This should be the last executable line in the problem.
