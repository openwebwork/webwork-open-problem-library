############

TEXT(beginproblem());


foreach $i (0..1) {

   foreach $j (0..2) {
   		$a[$i][$j] = random(-4,4,1);
   		$b[$i][$j] = random(-4,4,1);
   	}
}

foreach $i (0..1) {

   foreach $j (0..2) {
   		$c[$i][$j] = $a[$i][$j]+$b[$i][$j];
   		
   	}
}

$showPartialCorrectAnswers = 1 ;

BEGIN_TEXT
Determine \(x \) and \( y\) such that

\[ 
\left[\begin{array}{ccc}
\{join("& ",@{$a[0]}[0..$#{$a[0]}])\} \cr
\{join("& ",@{$a[1]}[0..$#{$a[1]}])\} 
\end{array}\right]
 + \left[\begin{array}{ccc}
x-y      & $b[0][1] & $b[0][2] \\
$b[1][0] & x        & $b[1][2] 
\end{array} \right]
= \left[\begin{array}{ccc}
$c[0][0] & $c[0][1] & $c[0][2] \\
$c[1][0] & 2 x +y   & $c[1][2]
\end{array}\right]
\]

$BR
\( x = \) $SPACE  \{ ans_rule(10) \}
$BR
\( y = \) $SPACE \{ans_rule(10) \} 


END_TEXT


$x=($b[0][0]+$a[1][1])/2;
$y=($a[1][1]-$b[0][0])/2;
ANS(num_cmp($x));
ANS(num_cmp($y));

ENDDOCUMENT() ;        
