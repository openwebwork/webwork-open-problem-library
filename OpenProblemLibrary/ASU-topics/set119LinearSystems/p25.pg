## DESCRIPTION
## Systems of Linear Equations
## ENDDESCRIPTION

## Tagged by tda2d

## DBsubject(Linear algebra)
## DBchapter(Systems of linear equations)
## DBsection(Systems with 2 variables)
## Institution(ASU)
## MLT(multsystems)
## Level(2)
## KEYWORDS('Algebra' 'Linear Equations')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGasu.pl",
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"extraAnswerEvaluators.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a1 = non_zero_random(-9,9,2);
$b1 = non_zero_random(-10,10,2);
$c1 = non_zero_random(-10,10,1);
do {$d1 = non_zero_random(-9,9,2);} until(($a1*$d1 - $b1*$c1) != 0);
$x1 = random(1,9,1);
$y1 = random(-9,-1,1);
$m1 = $a1 * $x1 + $b1 * $y1;
$n1 = $c1 * $x1 + $d1 * $y1;

$a2 = non_zero_random(-5,5,1);
$b2 = non_zero_random(-5,5,1);
@mult = (-3,-2,-1,3);
$tag = random(0,3,1);
$c2 = $a2 * $mult[$tag];
$d2 = $b2 * $mult[$tag];
$x2 = random(-5,5,1);
$y2 = random(-5,5,1);
$m2 = $a2 * $x2 + $b2 * $y2;
$n2 = $m2 * $mult[$tag] + 1;

$a3 = random(-5,-1,1);
$b3 = random(1,5,1);
@mult = (-3,-2,2,3);
$tag = random(0,3,1);
$c3 = $a3 * $mult[$tag];
$d3 = $b3 * $mult[$tag];
$x3 = random(-5,-1,1);
$y3 = random(1,5,1);
$m3 = $a3 * $x3 + $b3 * $y3;
$n3 = $m3 * $mult[$tag];

$a4 = non_zero_random(-9,9,2);
$b4 = non_zero_random(-10,10,2);
$c4 = non_zero_random(-9,9,2);
do {$d4 = non_zero_random(-9,9,2);} until (($a4*$d4 - $b4*$c4) !=0);
$m4 = 0;
$n4 = 0;
$p4 = $a4 + $b4;
$q4 = $c4 + $d4;

@a = ($a1, $a2, $a3, $a4);
@b = ($b1, $b2, $b3, $b4);
@c = ($c1, $c2, $c3, $c4);
@d = ($d1, $d2, $d3, $d4);
@m = ($m1, $m2, $m3, $m4);
@n = ($n1, $n2, $n3, $n4);

@cor_ans = ('Unique solution: \(x=$x1,\ y=$y1\)', 
                'No solutions', 
                    'Infinitely many solutions', 
                        'Unique solution: \(x=0,\ y=0\)');

@ans1 =    ('Unique solution: \(x=$y1,\ y=$x1\)',  
                'Unique solution: \(x=0,\ y=0\)', 
                    'No solutions',  
                        'Unique solution: \(x=-$d4,\ y=$a4\)');

@ans2 =    ('Unique solution: \(x=0,\ y=0\)', 
                'Infinitely many solutions', 
                    'Unique solution: \(x=0,\ y=0\)',
                        'No solutions');

@ans3 =    ('No solutions',
                'Unique solution: \(x=$m2,\ y=$n2\)',
                    'Unique solution:\(x=\frac{$m3}{$a3},\ y=0\)',
                        'Infinitely many solutions');

@ans4 =    ('Infinitely many solutions',
                'Unique solution: \(x=$n2,\ y=$m2\)',
                    'Unique solution: \(x=$m3,\ y=$n3\)',
                        'Unique solution: \(x=$p4,\ y=$q4\)');

@slice = NchooseK(4,4);

@sa = @a[@slice];
@sb = @b[@slice];
@sc = @c[@slice];
@sd = @d[@slice];
@sm = @m[@slice];
@sn = @n[@slice];

@scor_ans = @cor_ans[@slice];
@sans1 = @ans1[@slice];
@sans2 = @ans2[@slice];
@sans3 = @ans3[@slice];
@sans4 = @ans4[@slice];

@m11 = ("$a1 x", "$a2 x", "$a3 x", "$a4 x");
@m12 = ("+$b1 y", "+$b2 y", "+$b3 y", "+$b4 y");
@m13 = ("$m1", "$m2", "$m3", "$m4");
@m21 = ("$c1 x", "$c2 x", "$c3 x", "$c4 x");
@m22 = ("+$d1 y", "+$d2 y", "+$d3 y", "+$d4 y");
@m23 = ("$n1", "$n2", "$n3", "$n4");

@sm11 = @m11[@slice];
@sm12 = @m12[@slice];
@sm13 = @m13[@slice];
@sm21 = @m21[@slice];
@sm22 = @m22[@slice];
@sm23 = @m23[@slice];

$NO_SPACE = '@{}';

$mc0 = new_multiple_choice();
         
$mc0->qa('\[ \left\{ \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
$sm11[0] & $sm12[0] & = & $sm13[0] \cr
$sm21[0] & $sm22[0] & = & $sm23[0]
\end{array} \right. \]', $scor_ans[0]);

$mc0->extra($sans1[0], $sans2[0], $sans3[0], $sans4[0]);

$mc0->makeLast('None of the above');

$mc1 = new_multiple_choice();
         
$mc1->qa('\[ \left\{ \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
$sm11[1] & $sm12[1] & = & $sm13[1] \cr
$sm21[1] & $sm22[1] & = & $sm23[1]
\end{array} \right. \]', $scor_ans[1]);

$mc1->extra($sans1[1], $sans2[1], $sans3[1], $sans4[1]);

$mc1->makeLast('None of the above');

$mc2 = new_multiple_choice();
         
$mc2->qa('\[ \left\{ \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
$sm11[2] & $sm12[2] & = & $sm13[2] \cr
$sm21[2] & $sm22[2] & = & $sm23[2]
\end{array} \right. \]', $scor_ans[2]);

$mc2->extra($sans1[2], $sans2[2], $sans3[2], $sans4[2]);

$mc2->makeLast('None of the above');

$mc3 = new_multiple_choice();
         
$mc3->qa('\[ \left\{ \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
$sm11[3] & $sm12[3] & = & $sm13[3] \cr
$sm21[3] & $sm22[3] & = & $sm23[3]
\end{array} \right. \]', $scor_ans[3]);

$mc3->extra($sans1[3], $sans2[3], $sans3[3], $sans4[3]);

$mc3->makeLast('None of the above');


BEGIN_TEXT
$PAR
For each system, determine whether it has a unique solution 
(in this case, find the solution), infinitely many solutions, or no solutions.
$PAR
1.
\{ $mc0->print_q() \}
\{ $mc0->print_a() \}
END_TEXT
ANS(radio_cmp($mc0->correct_ans));

BEGIN_TEXT
$PAR
2.
\{ $mc1->print_q() \}
\{ $mc1->print_a() \}
END_TEXT
ANS(radio_cmp($mc1->correct_ans));

BEGIN_TEXT
$PAR
3.
\{ $mc2->print_q() \}
\{ $mc2->print_a() \}
END_TEXT
ANS(radio_cmp($mc2->correct_ans));


BEGIN_TEXT
$PAR
4.
\{ $mc3->print_q() \}
\{ $mc3->print_a() \}
END_TEXT
ANS(radio_cmp($mc3->correct_ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.
