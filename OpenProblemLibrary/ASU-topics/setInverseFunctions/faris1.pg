sub myfunc {
  my $x = shift;

  if($x<2) {
    return( -$x+4);
  }
  else 
  {
    return(-2*$x+6);
  }
}

$cut = 2;

sub invf {
 my $x = shift;
 return( ($x<$cut) ? (-$x+6)/2 : -$x+4);
}

