DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl");


$a = non_zero_random(-5,5);
$na = -$a;
$x1 = $a + 1;
$x2 = $a + 4 ;
$x3 = $a + 9 ;

TEXT(beginproblem());

BEGIN_TEXT
$BR
Let \[ f(x) = \sqrt{x+$na} \]
$BR
$BR
Find
$PAR
(i) \(f'($x1)\) \{ans_rule(30)\}
$PAR
(ii) \(f'($x2)\) \{ans_rule(30)\}
$PAR
(iii) \(f'($x3)\) \{ans_rule(30)\}
$BR

END_TEXT

@answers = (num_cmp(1/2), num_cmp(1/4), 
num_cmp(1/6));

ANS(@answers );

