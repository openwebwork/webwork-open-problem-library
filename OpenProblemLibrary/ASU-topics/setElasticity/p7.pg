);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=list_random(35, 56, 47);
$b=list_random(2, 3, 5);

BEGIN_TEXT
The demand function for a certain item is 
\( x = $a\sqrt{32-p^2} \) 
$BR
(a) Evaluate the elasticity at $b.
\(E($b)=\) \{ans_rule(10) \}
$BR
$BR
(b) For what value of p, the demand is unitary.
\(p=\) \{ans_rule(10) \}
$BR

END_TEXT

$ans1 = "($b**2)/(32-$b**2)";
$ans2 = 4;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
