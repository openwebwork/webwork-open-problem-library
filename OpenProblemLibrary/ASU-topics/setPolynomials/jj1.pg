DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGcomplexmacros.pl",
"extraAnswerEvaluators.pl",
"PGasu.pl"
);

TEXT(beginproblem());


$c1 = random(2,9);
$r1 = "$c1 i";
$r2 = "-$c1 i";
$m = random(2,5);
do { $n = random(-10,10); } until (abs(gcd($n,$m)) == 1);

# (n x -m) (x^2 + c^2)
$a = $n; $b = -$m; $c = $c1*$c1*$n; $d =  - $c1*$c1*$m;
$poly = nicestring([$a, $b, $c, $d]);

$ans = "$r1, $r2, $m/$n";


BEGIN_TEXT
The polynomial
\[ f(x) = $poly \]
has \($r1\) as a root.  Give $BITALIC all$EITALIC of the roots of \(f\) in a
comma-separated list, including the given one.
	$PAR
	Roots:  \{ans_rule(40)\}
END_TEXT

ANS(number_list_cmp($ans, complex=>'ok'));

ENDDOCUMENT();        # This should be the last executable line in the problem.

