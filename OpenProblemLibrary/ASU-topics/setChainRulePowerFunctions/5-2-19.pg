DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,20,1);
$b = random(2,20,1);
$c = random(1,20,1);
$xp = random(-3,3,1);

$fcn = Formula("(x+$a)^($b) e^($c x)")->reduce;

$ans = Compute("$b ($xp + $a)^($b-1) e^($c*$xp) + $c  ($xp + $a)^$b  e^($c*$xp)");  

Context()-> texStrings;
BEGIN_TEXT
Suppose that \[f(x) = $fcn \]  Find \(f'($xp)\).

$BR $BR

\(f'($xp)\) = \{ans_rule(30) \}
END_TEXT
Context()-> normalStrings;

ANS($ans -> cmp);

ENDDOCUMENT();


