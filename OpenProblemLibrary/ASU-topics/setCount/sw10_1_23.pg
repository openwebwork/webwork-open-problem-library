loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(6,25,1);

BEGIN_TEXT
A true-false test contains $a questions. In how many different ways can
the $a-question test be answered? 
$BR
Your answer is : \{ans_rule(25) \}
$BR
END_TEXT

$ans = 2**$a;
ANS(num_cmp($ans));

