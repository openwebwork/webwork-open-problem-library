"PGasu.pl"
);

TEXT(beginproblem());

$a = random(2,5);
$n = random(8, 12, 2);
for $j (1..$n) { $b[$j] = $a**$j; }


BEGIN_TEXT
Find the sum.
\[ 1-\frac{1}{$b[1]} + \frac{1}{$b[2]} - \frac{1}{$b[3]} + \cdots
 + \frac{1}{$b[$n]} \]
$BR$BR
Sum = \{ans_rule(40)\}
END_TEXT


ANS(num_cmp("(1+1/$a^($n+1))/(1+1/$a)"));

ENDDOCUMENT();        # This should be the last executable line in the problem.

