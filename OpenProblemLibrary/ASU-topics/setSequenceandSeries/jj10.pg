TEXT(beginproblem());

sub ffx {
 my $bb = shift;
 1 while ($bb =~ s/(.*[0-9])([0-9][0-9][0-9])/$1,$2/);
 return($bb);
}

$a = random(2,5);
do{$r = random(2,5);} until ($a != $r);

for $j (0..2) { $v[$j] = $a*($r**$j);}

$c=random(4, 10);
$b = $a*($r**$c);
while($b<610000) {
  $jmp= random(1,3);
  $c+=$jmp;
  $b *= $r**$jmp;
}
$b =ffx($b);

BEGIN_TEXT
Which term of the geometric sequence $v[0], $v[1], $v[2], ... is $b?
	$BR$BR
	\(n =\) \{ans_rule(40)\}
END_TEXT

