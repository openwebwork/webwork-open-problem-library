END_PGML

# determine the bounds of the lines for nicer plotting

$xmax =
    $m * 10.5 + $b > 10.5    ? (10.5 - $b) / $m
    : $m * 10.5 + $b < -10.5 ? (-10.5 - $b) / $m
    :                          10.5;

$xmin =
    $m * -10.5 + $b > 10.5    ? (10.5 - $b) / $m
    : $m * -10.5 + $b < -10.5 ? (-10.5 - $b) / $m
