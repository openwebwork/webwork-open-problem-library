"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


for ($i=0; $i<4; $i++) {
	$n[$i] = random(3,6,1);
}

for ($i=0; $i<4; $i++) {
	$x[$i] = random(0,$n[$i],1);
}

for ($i=0; $i<4; $i++) {
	$p[$i] = random(.1,.9,.1);
}

for ($i=0; $i<4; $i++){
	$comb[$i] = fact ($n[$i])/(fact ($x[$i])*fact ($n[$i]-$x[$i]));
	$other[$i] = $p[$i]**($x[$i])*(1-$p[$i])**($n[$i]-$x[$i]);
	$prob[$i] = $comb[$i]*$other[$i];
}


BEGIN_TEXT
If \(x\) is a binomial random variable, compute \(p(x)\) for each of the following cases: $PAR
(a) \( \) \( n = $n[0], x = $x[0], p = $p[0]\)
$BR
\(p(x) =\) \{ans_rule(10)\} $PAR

(b) \( \) \( n = $n[1], x = $x[1], p = $p[1]\)
$BR
\(p(x) =\) \{ans_rule(10)\} $PAR

(c) \( \) \( n = $n[2], x = $x[2], p = $p[2]\)
$BR
\(p(x) =\) \{ans_rule(10)\} $PAR

(d) \( \) \( n = $n[3], x = $x[3], p = $p[3]\)
$BR
\(p(x) =\) \{ans_rule(10)\}
END_TEXT
ANS(num_cmp($prob[0]));
ANS(num_cmp($prob[1]));
ANS(num_cmp($prob[2]));
ANS(num_cmp($prob[3]));

