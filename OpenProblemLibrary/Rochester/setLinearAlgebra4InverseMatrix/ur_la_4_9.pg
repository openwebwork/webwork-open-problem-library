DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Complex-Matrix');


$a = random(-3,3,1);
$b = non_zero_random(-3,3,1);
$e = non_zero_random(-3,3,1);
$f = non_zero_random(-3,3,1);

$det_re = random(-1,0,1);
$det_im = (1 + $det_re) * random(-1,1,2);
$det = $det_re + i * $det_im;

$a[1][1] = $a + i * $b;
$a[2][1] = 1 + i * 0;
$a[2][2] = $e + i * $f;
$a[1][2] = $a[1][1]*$a[2][2] - $det;

$A = Matrix([
[$a[1][1],$a[1][2]],
[$a[2][1],$a[2][2]],
]);

$answer = $A->inverse();

Context()->texStrings;
BEGIN_TEXT
If \( A = $A \), then 
$BR
$BR
\( A^{-1} = \) \{ $answer->ans_array() \}.
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp() );

;
ENDDOCUMENT();
