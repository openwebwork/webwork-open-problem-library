DOCUMENT() ;        

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserVectorUtils.pl",
"PGcourse.pl"
) ;

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

$a = non_zero_random(-2,2,1);
$b = non_zero_random(-2,2,1);
$c = non_zero_random(-3,-2,1);
$d = $c*$a;
$e = $c*$a+1;

do {

$answer = Matrix([
[random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1)],
]);

} until ( $answer->det() != 0 );


$v1 = Matrix([[$a],[$b]]);
$v2 = Matrix([[$d],[$e]]);

$Tv1 = $answer * $v1;
$Tv2 = $answer * $v2;


Context()->texStrings;
BEGIN_TEXT
Suppose that \( T \) is a linear transformation such that
\[
T\left( $v1 \right)  = $Tv1,
\ \ \ \
T\left( $v2 \right)  = $Tv2,
\]
Write \( T \) as a matrix transformation.
$BR
$BR
For any \( \vec{v} \in \mathbb{R}^2 \), the linear transformation \( T \) is given by \(T( \vec{v} ) =\) \{ $answer->ans_array() \} \( \vec{v}  \).

END_TEXT
Context()->normalStrings;


ANS( $answer->cmp() );

;

ENDDOCUMENT();
