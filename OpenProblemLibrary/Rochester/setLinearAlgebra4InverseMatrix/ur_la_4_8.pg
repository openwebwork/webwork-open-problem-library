DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGmatrixmacros.pl",
  "PGnumericalmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

@c = NchooseK(8,8,1);

foreach $i (0..7) { 
	$c[$i] = $c[$i]+2;
} 

@y = (  "\( (I_n-A)(I_n+A) = I_n-A^2 \)",
	"\( (ABA^{-1})^$c[0] = AB^$c[0] A^{-1}\)", 
        "\( (I_n+A)(I_n+A^{-1})=2I_n+A+A^{-1}\)",
			"\(A^$c[4]\) is invertible",
			"\($c[5] A\) is invertible",
			"\(A^$c[1] B^$c[2]\) is invertible");

@n = ("\(A+B\) is invertible",
      "\(A+A^{-1}\) is invertible",	
      "\(A+I_n\) is invertible",
		"\(ABA^{-1}=B\)",
		"\(AB=BA\)",
 			"\( (A+A^{-1})^$c[3] = A^$c[3] + A^{-$c[3]} \)",
			"\( (AB)^{-1} = A^{-1}B^{-1} \)",
				"\( (A+B)^2 = A^2+B^2+2AB \)",
				"\( (A+B)(A-B) = A^2-B^2 \)");

$y1 = random(0,2,1);
$y2 = random(3,5,1);

$n1 = random(0,2,1);
$n2 = random(3,4,1);
$n3 = random(5,6,1);
$n4 = random(7,8,1);

$cmc = new_checkbox_multiple_choice();
$cmc -> qa ("Select all statements below which are true for all invertible \(n\times n\) matrices \(A\) and \(B\)", 
	$y[$y1], $y[$y2]);

$cmc -> extra ($n[$n1], $n[$n2], $n[$n3], $n[$n4]); 

BEGIN_TEXT

$BR
\{$cmc -> print_q \}
$BR
\{$cmc -> print_a \}

END_TEXT

ANS(checkbox_cmp( $cmc->correct_ans ));
;
ENDDOCUMENT();       # This should be the last executable line in the problem.
