DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGunion.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

# create invertible matrices

do {

$A = Matrix([
[random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1)],
]);

$B = Matrix([
[random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1)],
]);

} until ( $A->det() != 0 && $B->det() != 0 );

# create non invertible matrices

$a = random(-9,9,1);
$b = random(-9,9,1);
$c = random(-5,-1,1);
$d = $c*$a;
$e = $c*$b;

$C = Matrix([[$a,$b],[$d,$e]]);
$D = Matrix([[$d,$b],[0,0]]);



# Create and use pop up lists 
$tf = new_select_list();
$tf->rf_print_q(~~&pop_up_list_print_q);

# Specify choices presented to students
$tf->ra_pop_up_list( 
[ No_answer => "Choose", "Invertible"=>"Invertible", "Not invertible"=>"Not invertible"] );

# Questions and answers
Context()->texStrings;
$tf -> qa ( 
"\( $A \) $BR",
"Invertible",
"\( $B \) $BR",
"Invertible",
"\( $C \) $BR",
"Not invertible",
"\( $D \) $BR",
"Not invertible",
);
Context()->normalStrings;


# How many questions to use
$tf->choose(4);


Context()->texStrings;
BEGIN_TEXT
Are the following matrices invertible? 
$BR
$BR
\{ $tf-> print_q \}
END_TEXT
Context()->normalStrings;

install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

ANS(str_cmp($tf->ra_correct_ans));

;

ENDDOCUMENT();
