DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

# choosing the coefficients in such a way that the determinant is either 1 or -1

$a11 = random(-5,5,1);
$a21 = random(-5,5,1); 
$a31 = random(-1,1,2);

$b = non_zero_random(-3,3,1);
$a12 = $b * $a11;
$m = random(-1,1,2);
$a22 = $b * $a21 + $m;
$a32 = $b * $a31;

$c = random(-3,3,1);
$d = random(-3,3,1);
$n = random(-1,1,2);
$a13 = $c * $a11 + $d * $a12 + $n;
$a23 = $c * $a21 + $d * $a22;
$a33 = $c * $a31 + $d * $a32;

#$det = - $a31 * $m * $n;

#$ans11 = ($a22 * $a33 - $a23 * $a32)/$det;
#$ans12 = - ($a12 * $a33 - $a13 * $a32)/$det;
#$ans13 = ($a12 * $a23 - $a13 * $a22)/$det;
#$ans21 = - ($a21 * $a33 - $a23 * $a31)/$det;
#$ans22 = ($a11 * $a33 - $a13 * $a31)/$det;
#$ans23 = - ($a11 * $a23 - $a13 * $a21)/$det;
#$ans31 = ($a21 * $a32 - $a22 * $a31)/$det;
#$ans32 = - ($a11 * $a32 - $a12 * $a31)/$det;
#$ans33 = ($a11 * $a22 - $a12 * $a21)/$det;

$A = Matrix([
[$a11,$a12,$a13],
[$a21,$a22,$a23],
[$a31,$a32,$a33],
]);

$answer = $A->inverse();

Context()->texStrings;
BEGIN_TEXT
If \( A = $A \), then 
$BR
$BR
\( A^{-1} = \) \{ $answer->ans_array() \}.
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp() );

COMMENT('Matrix entries in the answer are always integers (i.e., the matrix is unimodular).');
ENDDOCUMENT();
