DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');

$a = non_zero_random(-8,8,2);
$b = random(3,9,2) * random(-1,1,2);
$c = random(3,9,2) * random(-1,1,2);
$d = random(3,9,1) * random(-1,1,2);
$x = random(-10,10,1);
$y = non_zero_random(-10,10,1);
$m = $a * $x + $b * $y;
$n = $c * $x + $d * $y;

$NO_SPACE = '@{}';

Context()->texStrings;
BEGIN_TEXT
Solve the system using row operations (or elementary matrices).
\[ \left\lbrace \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
$a x & +$b y & = & $m \\
$c x & +$d y & = & $n 
\end{array}\right. \]
$BR
\( x= \) \{ans_rule(20) \}
$BR
\( y= \) \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

ANS(Compute("$x")->cmp);
ANS(Compute("$y")->cmp);
COMMENT('Unique integer-valued solution.');
ENDDOCUMENT();       # This should be the last executable line in the problem.
