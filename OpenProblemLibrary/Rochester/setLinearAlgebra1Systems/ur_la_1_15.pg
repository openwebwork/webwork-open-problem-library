DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');


$sign = random(-1,1,2);
$a = random(2,5,1) * $sign;
$b = random(3,9,1) * $sign;

$sign2 = random(-1,1,2);
$c = random(1,6,1) * $sign2;
$d = random(3,6,1);
$epd = random(-1,1,2);
$e = $epd - $d;
$f = random(3,9,1) * $sign2;
$m = random(2,3,1) * random(-1,1,2);
$g = $m * ($e + $d);
$h = $m * ($e * $a + $b);
$i = $m * ($e * $c + $f);

$NO_SPACE = '@{}';

$k = $a + $epd * ($b - $a*$d);
$l = $epd * ($b - $a*$d);
$m = $c + $epd * ($f - $c*$d);
$n = $epd * ($f - $c*$d);

$displace = Matrix([$m, $n, 0])->transpose;
$basis1 = Matrix([- $k , -$l, 1])->transpose;

$multians = MultiAnswer($displace, $basis1)->with(
  singleResult => 1,
  separator => ', ',
  tex_separator => ', ',
  allowBlankAnswers=>0,
  checker => ~~&parametric_plane_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT
Solve the system 
\[ \left\lbrace \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
   x_1 & -    x_2 & + $a x_3 & = & $c \\
$d x_1 & + $e x_2 & + $b x_3 & = & $f \\
$g x_1 &          & + $h x_3 & = & $i  
\end{array} \right. \]
$BR
\(
\displaystyle
\left\lbrack
\begin{array}{c}
x_1 \\
x_2 \\
x_3
\end{array}
\right\rbrack
= \)
\{ $multians->ans_array \}
\( + s \)
\{ $multians->ans_array \}.
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;
ENDDOCUMENT();
