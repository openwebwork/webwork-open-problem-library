## EditionText1('5')
## Section1('1.1')
## Problem1('')
## KEYWORDS('system','linear equations')
##a system ax+by=m, cx+dy=n is given, a=1, b,m,c,d,n are integers.
##the values of x and y may be non-integer.
##solve using substitution
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');

$a = 1;
$b = random(2,5,1);
$c = random(2,5,1);
$det = non_zero_random(-2,2,1);
$d = $det-$b*$c;
$m = random(-5,5,1);
$n = random(-5,5,1);
$ans1 = Compute("($m*$d+$b*$n)/$det");
$ans2 = Compute("($a*$n-$m*$c)/$det"); 

$NO_SPACE = '@{}';

Context()->texStrings;
BEGIN_TEXT
Solve the system using substitution.
\[ \left\lbrace
\begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
 x & -$b y & = & $m \\
$c x & +$d y & = & $n
\end{array} \right. \]
$BR
\( x= \) \{ans_rule(20) \}
$BR 
\( y= \) \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

ANS($ans1->cmp);
ANS($ans2->cmp);
COMMENT('Unique solution is likely fraction-valued.');
ENDDOCUMENT();       # This should be the last executable line in the problem. 
