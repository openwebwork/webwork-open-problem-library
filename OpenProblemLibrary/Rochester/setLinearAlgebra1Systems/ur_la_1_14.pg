DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(2,5,1) * random(-1,1,2);
$b = random(2,5,1) * random(-1,1,2);
$c = non_zero_random(-9,9,1);
$d = random(3,6,1);
$emd = random(-1,1,2);
$e = $d + $emd;
$f = non_zero_random(-9,9,1);

$NO_SPACE = '@{}';

$k = $a - $emd * ($b - $a*$d);
$l = $emd * ($b - $a*$d);
$m = $c - $emd * ($f - $c*$d);
$n = $emd * ($f - $c*$d);

$displace = Matrix([$m, $n, 0])->transpose;
$basis1 = Matrix([- $k , -$l, 1])->transpose;

$multians = MultiAnswer($displace, $basis1)->with(
  singleResult => 1,
  separator => ', ',
  tex_separator => ', ',
  allowBlankAnswers=>0,
  checker => ~~&parametric_plane_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT
Solve the system 
\[ \left\lbrace \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
   x_1 & +    x_2 & + $a x_3 & = & $c \\
$d x_1 & + $e x_2 & + $b x_3 & = & $f
\end{array} \right. \]
$BR
\(
\displaystyle
\left\lbrack
\begin{array}{c}
x_1 \\
x_2 \\
x_3
\end{array}
\right\rbrack
= \)
\{ $multians->ans_array \}
\( + s \)
\{ $multians->ans_array \}.
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;
ENDDOCUMENT();
