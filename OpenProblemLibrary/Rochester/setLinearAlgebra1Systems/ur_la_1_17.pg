DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');

$x1 = random(-5,5,1);
$x2 = non_zero_random(-5,5,1);
$x3 = non_zero_random(-9,9,1);
$x4 = random(-5,5,1);

$a11 = 1;
$a12 = 0;
$a13 = random(2,4,1);
$a14 = random(2,4,1);

$b1 = $a11*$x1 + $a12*$x2 + $a13*$x3 + $a14*$x4;

$a21 = 0; 
$a22 = 1;
$a23 = random(-4,-2,1);
$a24 = random(-4,-2,1);

$b2 = $a21*$x1 + $a22*$x2 + $a23*$x3 + $a24*$x4;

$k = non_zero_random(2,3,1);
$l = non_zero_random(-3,-2,1);
$a31 = $k*$a11 + $l*$a21;
$a32 = $k*$a12 + $l*$a22;
$a33 = $k*$a13 + $l*$a23 + non_zero_random(-4,4,1);
if ($a33 == 0) { $a33 = $k*$a13 + $l*$a23 + 5;}
$a34 = $k*$a14 + $l*$a24;

$b3 = $a31*$x1 + $a32*$x2 + $a33*$x3 + $a34*$x4;

$a41 = - $a21;
$a42 = - $a22;
$a43 = - $a23;
$a44 = - $a24 + random(4,6,1);

$b4 = $a41*$x1 + $a42*$x2 + $a43*$x3 + $a44*$x4;

$NO_SPACE = '@{}';

Context()->texStrings;
BEGIN_TEXT
Solve the system 
\[ \left\lbrace
\begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
               x_1 &           & +$a13 x_3 & + $a14 x_4 & = & $b1 \\
                   &       x_2 & +$a23 x_3 & + $a24 x_4 & = & $b2 \\
          $a31 x_1 & +$a32 x_2 & +$a33 x_3 & + $a34 x_4 & = & $b3 \\
                   &     - x_2 & +$a43 x_3 & + $a44 x_4 & = & $b4  
\end{array}\right. \]
\(x_1 = \) \{ans_rule(20)\}$BR
\(x_2 = \) \{ans_rule(20)\}$BR
\(x_3 = \) \{ans_rule(20)\}$BR
\(x_4 = \) \{ans_rule(20)\}$BR
END_TEXT
Context()->normalStrings;

ANS(Compute($x1)->cmp);
ANS(Compute($x2)->cmp);
ANS(Compute($x3)->cmp);
ANS(Compute($x4)->cmp);

COMMENT('Unique integer-valued solution.');
ENDDOCUMENT();
