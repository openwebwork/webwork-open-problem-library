do {

$matrix = Matrix([
[random(-5,5,1) + i*random(-5,5,1),random(-5,5,1) + i*random(-5,5,1)],
[random(-5,5,1) + i*random(-5,5,1),random(-5,5,1) + i*random(-5,5,1)],
]);

$matrix_det = $matrix->det;

} until (abs($matrix_det) > 0.1);

