DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(4,5,1);
$apb = random(-1,1,2);
$b = $apb - $a;
$c = random(2,4,1);
$d = random(2,4,1);
$e = random(0,4,1);

$f = random(2,3,1);
$g = random(2,3,1);
$h = random(1,5,1);

$i = $a - 1;
$j = $b + 1;
$k = $c + $f;
$l = $d + $g;
$m = $e + $h;

$p = random(2,3,1) * random(-1,1,2);
$n = - $p;
$q = $p * $f;
$r = $p * $g;
$s = $p * $h;

$NO_SPACE = '@{}';

$t = $apb*($a*$f+$c) - $f;
$u = $apb*($a*$g+$d) - $g;
$v = $apb*($a*$h+$e) - $h;

$w = $apb*($a*$f+$c);
$x = $apb*($a*$g+$d);
$y = $apb*($a*$h+$e);

$displace = Matrix([$v, $y, 0, 0])->transpose;
$basis1 = Matrix([- $t, - $w, 1, 0])->transpose;
$basis2 = Matrix([- $u, - $x, 0, 1])->transpose;

$multians = MultiAnswer($displace, $basis1, $basis2 )->with(
  singleResult => 1,
  separator => ', ',
  tex_separator => ', ',
  allowBlankAnswers=>0,
  checker => ~~&parametric_plane_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT
Solve the system 
\[ \left\lbrace \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
$a x_1 & + $b x_2 & + $c x_3 & + $d x_4 = & $e \\
 - x_1 &    + x_2 & + $f x_3 & + $g x_4 = & $h \\ 
$i x_1 & + $j x_2 & + $k x_3 & + $l x_4 = & $m \\
$n x_1 & + $p x_2 & + $q x_3 & + $r x_4 = & $s   
\end{array} \right. \]
$BR
\(
\displaystyle
\left\lbrack
\begin{array}{c}
x_1 \\
x_2 \\
x_3 \\
x_4
\end{array}
\right\rbrack
= \)
\{ $multians->ans_array \}
\( + s \)
\{ $multians->ans_array \}
\( + t \)
\{ $multians->ans_array \}.
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;
ENDDOCUMENT();
