DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = non_zero_random(-4,4,2);
$b = 1;
$c = random(3,9,2) * random(-1,1,2);
$e = random(2,4,1) * random(-1,1,2);
$d = $a * $e;
$f = $c * $e;

$NO_SPACE = '@{}';

$displace = Matrix([$c/$a, 0])->transpose;
$basis1 = Matrix([- $b/$a, 1])->transpose;

$multians = MultiAnswer($displace, $basis1)->with(
  singleResult => 1,
  separator => ', ',
  tex_separator => ', ',
  allowBlankAnswers=>0,
  checker => ~~&parametric_plane_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT
Solve the system 
\[ \left\lbrace \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
$a x_1 & +    x_2 & = & $c \\
$d x_1 & + $e x_2 & = & $f
\end{array} \right. \]
$BR
\(
\displaystyle
\left\lbrack
\begin{array}{c}
x_1 \\
x_2
\end{array}
\right\rbrack
= \)
\{ $multians->ans_array \}
\( + s \)
\{ $multians->ans_array \}.
END_TEXT
Context()->normalStrings;


ANS($multians->cmp);
;
ENDDOCUMENT();       # This should be the last executable line in the problem.
