DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

@a = NchooseK(12,12);
for ($i=0; $i<12; $i++){
	$a[$i] = $a[$i] - 7 ; 
	if (abs($a[$i])<2) { 
        	$a[$i] = $a[$i] + 10;
	}
} 


$NO_SPACE = '@{}';	

$A = Matrix([
[0,$a[1],$a[2]],
[$a[4],$a[5],0],
[$a[8],$a[9],$a[10]],
]);

$B = Matrix([
[$a[3]],
[$a[7]],
[$a[11]],
]);

Context()->texStrings;
BEGIN_TEXT
Write the system 
\[ \left\lbrace \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r} 
        &   $a[1] y & + $a[2] z & = & $a[3] \\
$a[4] x & + $a[5] y &           & = & $a[7] \\
$a[8] x & + $a[9] y & + $a[10] z & = & $a[11]  
\end{array} \right. \] 
in matrix form. 
$BR
$BR
\{ $A->ans_array \}
\( \displaystyle \left\lbrack \begin{array}{c} x \\ y \\ z \end{array} \right\rbrack = \) 
\{ $B->ans_array \}.
END_TEXT
Context()->normalStrings;

ANS($A->cmp);
ANS($B->cmp);
;
ENDDOCUMENT();
