DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

#$myQ = new Matrix(4,2);
#$myR = new Matrix(2,2);
#$M = new Matrix(4,2);

$a = random(1,4,1);

$norm = 2 * $a;

@entr1 = ($a,   $a, $a, - $a);
@entr2 = ($a, - $a, $a,   $a);

$sign1 = random(-1,1,2);
$sign2 = random(-1,1,2);

@slice = NchooseK(4,4);

foreach $i (0..3) {
	$myq[$i][0] = $entr1[$slice[$i]] * $sign1;
	$myq[$i][1] = $entr2[$slice[$i]] * $sign2;
	#$myQ->assign($i+1,1, $myq[$i][0]);
	#$myQ->assign($i+1,2, $myq[$i][1]);
}

$myQ = Matrix([
[ $myq[0][0], $myq[0][1] ],
[ $myq[1][0], $myq[1][1] ],
[ $myq[2][0], $myq[2][1] ],
[ $myq[3][0], $myq[3][1] ],
]);

#$myR->assign(1,1, random(1,3,1));
#$myR->assign(1,2, non_zero_random(-4,4,1));
#$myR->assign(2,1, 0);
#$myR->assign(2,2, random(1,3,1));

$myR = Matrix([
[random(1,3,1),non_zero_random(-4,4,1)],
[0,random(1,3,1)],
]);

$M = $myQ * $myR;

#$Q = new Matrix(4,2);
#$R = new Matrix(2,2);

foreach $i (0..3) {
	foreach $j (0..1) { 
 	       	$q[$i][$j] = $myq[$i][$j]/$norm;
		# $Q->assign($i+1,$j+1, $q[$i][$j]);
	}
}

$Q = Matrix([
[ $q[0][0], $q[0][1] ],
[ $q[1][0], $q[1][1] ],
[ $q[2][0], $q[2][1] ],
[ $q[3][0], $q[3][1] ],
]);

$R = $myR * $norm;


Context()->texStrings;
BEGIN_TEXT
Find the \(QR\) factorization of the given matrix.
$BR 
$BR
$BCENTER
\($M = \) \{ $Q->ans_array \} \{ $R->ans_array \} 
$ECENTER
END_TEXT
Context()->normalStrings;

ANS($Q->cmp);
ANS($R->cmp);
;
ENDDOCUMENT();       # This should be the last executable line in the problem.

