## DESCRIPTION
##   Linear Inequalities and Optimization
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Operations research)
## DBchapter(Linear programming)
## DBsection(Constrained optimization - planar)
## Institution(Rochester)
## MLT(StraightOptimize)
## Level(2)
## KEYWORDS('Linear', 'Inequality', 'Optimization')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-6,-1,1);
$b = random(5,9,1);
$c = random(1,6,1);
$d = random(1,4,1);
$e = random(-9,-5,1);
$f = random(-4,-1,1);

$k1 = random(2,5);
$k2 = random(2,5);
while ($k1 == $k2) { $k2 = random(2,5);}

$m1 = $b - $d;
$n1 = $c - $a;
$p1 = $b * $c - $a * $d;
$m2 = $f - $e;
$n2 = $n1;
$p2 = $f * $c - $a * $e;

$z = random(1,10);
$ans = $k1 * $e - $k2 * $c + $z;

BEGIN_TEXT

Minimize \( f(x,y)= $k1 y - $k2 x + $z\) subject to 
\( x\ge $a, \ \ \ \ x\le $c, \ \ \ \ $m1 x + $n1 y \le $p1, \ \ \ \ $m2 x + $n2 y \ge $p2.\)
$BR
Answer: \{ans_rule(10)\}

END_TEXT

ANS(num_cmp($ans, mode=>"arith"));


ENDDOCUMENT();       # This should be the last executable line in the problem.
