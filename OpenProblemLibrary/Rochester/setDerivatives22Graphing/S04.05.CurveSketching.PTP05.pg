$a = random(2,6,1);
do {$b= non_zero_random(2,5,1);} until ($b !=$a);
$bs = $b**2;
$twiceabsq = 2*$a*$bs;

# the function and its derivatives
$ftex = "\frac{$a x^2}{x^2 - $bs }";
$fp = "-($twiceabsq * x)/((x**2 - $bs)**2)";
$fpp = "($twiceabsq * (3*x**2 + $bs))/((x**2 - $bs)**3)";

