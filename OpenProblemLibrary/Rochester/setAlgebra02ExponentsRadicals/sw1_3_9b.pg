DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());

$a = random(2,6,2);
$b = random(3,7,2);
$a1 = $a**3;
$b1 = $b**3;

TEXT(EV2(<<EOT));
The expression 
\[\left(-\frac{$a1}{$b1}\right)^{2/3}\]
$BR
equals  \{ ans_rule(5) \} / \{ ans_rule(5) \}.
EOT

@factors = ();
@commonfactors = ();
$fac = $b**2;
for($i=2; $i<=($b**2)/2; $i++){
        if($fac % $i == 0){
                $fac =$fac/$i;
                push @factors,$i;
                $i = $i - 1;
        };
};
$fac = $a**2;
foreach $i (@factors){
        if($fac % $i == 0){
                $fac = $fac / $i;
                push @commonfactors,$i;
        };
};
$den = $b**2;
$num = $a**2;
foreach $i (@commonfactors){
        $num = $num / $i;
        $den = $den / $i;
};
$ans1 = $num;
$ans2 = $den;

ANS(num_cmp($ans1, mode=>"strict"));
ANS(num_cmp($ans2, mode=>"strict"));

ENDDOCUMENT();        # This should be the last executable line in the problem.
