sub multidep {
        my $x ="x" ;
        my $y = "y" ;
        my $gx = $g ;
        $gx =~ s~~t~~x~~g ;
        my $gy = $g ;
        $gy =~ s~~t~~y~~g ;
        my $hx = $h ;
        $hx =~ s~~t~~x~~g ;
        my $hy = $h ;
        $hy =~ s~~t~~y~~g ;
        my $det1 = " $gx*$hy -$gy*$hx"  ;
        my $fx = $f ;
        $fx =~ s~~t~~$x~~g ;
        my $fy = $f ;
        $fy =~ s~~t~~$y~~g ;
        my $det2 = "$fx*$hy -$fy*$hx"  ;
        my $det3 = " $fx*$gy -$fy*$gx" ;
        my $test = " (($f)*($det1)- ($g )*($det2 ) + ($h )*($det3 ))" ;
                $test ;
}
