DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

foreach $i (1..4) { 
	$a[1][$i] = non_zero_random(-3,3,1);
	$a[2][$i] = non_zero_random(-3,3,1);
	$a[5][$i] = non_zero_random(-3,3,1);
}

$tag1 = random(1,3,1);
$tag2 = random($tag1+1,4,1);

$a[2][$tag1] = 0;
$a[5][$tag1] = 0;
$a[5][$tag2] = 0;

$m = non_zero_random(-2,2,1);
$n = non_zero_random(-1,1,1);
$p = random(-1,1,1);

$s = non_zero_random(-2,2,1);
$t = non_zero_random(-1,1,1);

foreach $i (1..4) { 
	$a[4][$i] = $m*$a[1][$i] + $n*$a[2][$i] + $p*$a[5][$i];
	$a[3][$i] = $s*$a[1][$i] + $t*$a[5][$i];
}

@slice = NchooseK(4,4); 

foreach $i (1..4) {
	foreach $j (1..4) { 
		$v[$i][$j] = $a[$slice[$i-1]+1][$j];
	}
}

$V1 = Matrix([[$v[1][1]], [$v[1][2]], [$v[1][3]], [$v[1][4]]]);
$V2 = Matrix([[$v[2][1]], [$v[2][2]], [$v[2][3]], [$v[2][4]]]);
$V3 = Matrix([[$v[3][1]], [$v[3][2]], [$v[3][3]], [$v[3][4]]]);
$V4 = Matrix([[$v[4][1]], [$v[4][2]], [$v[4][3]], [$v[4][4]]]);



$basis1 = Matrix([ [$a[1][1]], [$a[1][2]], [$a[1][3]], [$a[1][4]] ]);
$basis2 = Matrix([ [$a[2][1]], [$a[2][2]], [$a[2][3]], [$a[2][4]] ]);
$basis3 = Matrix([ [$a[5][1]], [$a[5][2]], [$a[5][3]], [$a[5][4]] ]);


$multians = MultiAnswer($basis1, $basis2, $basis3)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);


Context()->texStrings;
BEGIN_TEXT
Find a linearly independent set of vectors that spans the same subspace of \( {\mathbb R}^4\) as that spanned by the
vectors  
\[ 
$V1, \ \ \ \ 
$V2, \ \ \ \
$V3, \ \ \ \ 
$V4.
\]
A linearly independent spanning set for the subspace is:
$BR
$BR
$BCENTER
\(\Bigg\lbrace\) 
\{ $multians->ans_array \}, 
\{ $multians->ans_array \}, 
\{ $multians->ans_array \} 
\(\Bigg\rbrace.\)
$ECENTER
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;

ENDDOCUMENT();
