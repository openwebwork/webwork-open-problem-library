DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

foreach $i (1..3) { 
	$u[$i] = non_zero_random(-3,3,1);
	$v[$i] = non_zero_random(-3,3,1);
}

$tag = random(1,3,1);
$v[$tag] = 0;

$m = non_zero_random(-2,2,1);
$n = non_zero_random(-2,2,1);

foreach $i (1..3) { 
        $w[$i] = $m*$u[$i] + $n*$v[$i];
}

$U = Matrix([[$u[1]], [$u[2]], [$u[3]]]);
$W = Matrix([[$w[1]], [$w[2]], [$w[3]]]);
$V = Matrix([[$v[1]], [$v[2]], [$v[3]]]);

$basis1 = $U;
$basis2 = $V;

$multians = MultiAnswer($basis1, $basis2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);


Context()->texStrings;
BEGIN_TEXT
Find a linearly independent set of vectors that spans the same subspace of \( {\mathbb R}^3\) as that spanned by the
vectors  
\[ 
$U, \ \ \ \ 
$W, \ \ \ \
$V. 
\]
A linearly independent spanning set for the subspace is:
$BR
$BR
$BCENTER
\(\Bigg\lbrace\) 
\{ $multians->ans_array \}, 
\{ $multians->ans_array \} 
\(\Bigg\rbrace.\)
$ECENTER
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;

ENDDOCUMENT();
