DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$x1 = non_zero_random(-6,6,2);
$x2 = random(-5,5,2);
$y1 = random(-5,5,2);
$y2 = random(-6,6,1);

$ans1 = non_zero_random(-6,6,1);
$ans2 = non_zero_random(-6,6,1);
if (abs($ans1)==1) { $ans2 = random(2,6,1) * random(-1,1,2); } 

$v1 = $ans1 * $x1 + $ans2 * $y1;
$v2 = $ans1 * $x2 + $ans2 * $y2;

$v = Matrix([[$v1], [$v2]]);
$x = Matrix([[$x1], [$x2]]);
$y = Matrix([[$y1], [$y2]]);

Context()->texStrings;
BEGIN_TEXT
Express the vector \(\vec{v}= $v\) as a linear combination of \(\vec{x}= $x\) and \(\vec{y}=$y\).
$BR
$BR
\( \vec{v} = \) \{ans_rule(5)\} \(\vec{x}+\) \{ans_rule(5)\} \(\vec{y}\). 
END_TEXT
Context()->normalStrings;

ANS(Compute("$ans1")->cmp);
ANS(Compute("$ans2")->cmp);
;
ENDDOCUMENT();
