loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,8,1);
$b=random(1,6,1);

BEGIN_TEXT
In a circle of radius $a miles, the length of the arc that subtends 
a central angle of $b radians is \{ans_rule(15) \} miles.
$BR
END_TEXT

$ans1=$a*$b;

ANS(num_cmp($ans1));

