## DESCRIPTION
##   Apply the Normal Distribution
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Probability)
## DBchapter(Continuous distributions)
## DBsection(Gaussian normal)
## Institution(Rochester)
## MLT(Zinv-cdf)
## MLTleader(1)
## Level(2)
## KEYWORDS('Normal Distribution', 'Random Variable')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGnumericalmacros.pl",
  "PGstatisticsmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

for ($i=0; $i<6; $i++){
	$p[$i] = random(0,.5,.0001);
}

$g = random(-2.3,-1,.01);

$a = normal_distr($p[0]);
$b = normal_distr($p[1]);
$c = normal_distr($p[2]);
$d = normal_distr($p[3]);
$e = normal_distr($p[4]);
$f = normal_distr($p[5]);
$gg = normal_prob($g,0);

$aa = .5+$p[0];
$bb = 2*$p[1];
$cc = 2*$p[2];
$dd = .5-$p[3];
$ff = $gg+$p[5];

BEGIN_TEXT
Find the value of the standard normal random variable \(z\), called \(z_0\) such that: $PAR
(a) \( \) \(P(z \leq z_0 ) = $aa \) $BR
\(z_0 = \) \{ans_rule(10)\} $PAR

(b) \( \) \(P(-z_0 \leq z \leq z_0 ) = $bb \) $BR
\(z_0 = \) \{ans_rule(10)\} $PAR

(c) \( \) \(P(-z_0 \leq z \leq z_0 ) = $cc \) $BR
\(z_0 = \) \{ans_rule(10)\} $PAR

(d) \( \) \(P(z \geq z_0 ) = $dd \) $BR
\(z_0 = \) \{ans_rule(10)\} $PAR

(e) \( \) \(P(-z_0 \leq z \leq 0 ) = $p[4] \) $BR
\(z_0 = \) \{ans_rule(10)\} $PAR

(f) \( \) \(P($g \leq z \leq z_0 ) = !{$ff:%.4f} \) $BR
\(z_0 = \) \{ans_rule(10)\} 

END_TEXT
ANS(num_cmp($a, tol=>0.01));
ANS(num_cmp($b, tol=>0.01));
ANS(num_cmp($c, tol=>0.01));
ANS(num_cmp($d, tol=>0.01));
ANS(num_cmp($e, tol=>0.01));
ANS(num_cmp($f, tol=>0.01));

ENDDOCUMENT();       # This should be the last executable line in the problem.
