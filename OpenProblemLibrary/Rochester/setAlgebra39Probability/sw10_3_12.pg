DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,9,1);

BEGIN_TEXT
A poker hand, consisting of $a cards, is dealt from a standard deck of 52 cards.
Find the probability that the hand contains $a hearts.
$BR
Your answer is : \{ ans_rule(10) \}
$BR
$BR
END_TEXT

$s1=1;
for ($i=0;$i<$a;$i++) {
  $s1=$s1*(13-$i)/($a-$i);
}

$s2=1;
for ($i=0;$i<$a;$i++) {
  $s2=$s2*(52-$i)/($a-$i);
}

#$ans1 = choose($a,13)/choose($a,52);
$ans1 = $s1/$s2;

ANS(num_cmp($ans1));

ENDDOCUMENT();        # This should be the last executable line in the problem.
