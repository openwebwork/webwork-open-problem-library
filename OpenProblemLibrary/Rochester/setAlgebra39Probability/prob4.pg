## Date(6/3/2002)
## TitleText1('College Algebra')
## AuthorText1('Stewart, Redlin, Watson')
## EditionText1('3')
## Section1('10.2')
## Problem1('22')
## KEYWORDS('algebra', 'permutation')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(4,6,1);

if ($a == 4){
   $lts = AAABBBCCC;
   $ans1 = 8*7*6*5;
   $ans2 = 7*5*4/$ans1;
   };
if ($a == 5){
   $lts = AAABBBCC;
   $ans1 = 8*7*5*2;
   $ans2 = 5*4*3/$ans1;
   };
if ($a == 6){
   $lts = AAABBBCD;
   $ans1 = 8*7*5*4;
   $ans2 = 5*4*3*2/$ans1;
   };

BEGIN_TEXT
Find the number of distinguishable permutations of the given letters
``$lts''.
$BR
There are: \{ans_rule(20) \} permutations.
$BR
$BR
If a permutation is chosen at random, what is the probability that it begins 
with at least 2 A's?
$BR
The probability is \{ans_rule(20)\}.
$BR
END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ENDDOCUMENT();        # This should be the last executable line in the problem.

