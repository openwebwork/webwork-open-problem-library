DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
########################################
# Setup

Context("Numeric");
$showPartialCorrectAnswers = 1;

$an = random(1,3,1);
$as = random(-1,1,2);
$a  = $an * $as;
$bn = random(2,9,1);
$bs = random(-1,1,2);
$b  = $bn * $bs;
$cn = random(2,9,1);
$cs = random(-1,1,2);
$c  = $cn * $cs;

$g = Formula("$a x^4 + $b x^2 + $c");
$g0 = $g->eval(x=>0);

$dg = $g->D;
$dg0 = $dg->eval(x=>0);

$d2g = $g->D(2);
$d2g0 = $d2g->eval(x=>0);

$d3g = $g->D(3);
$d3g0 = $d3g->eval(x=>0);

$d4g = $g->D(4);
$d4g0 = $d4g->eval(x=>0);

$d5g = $g->D(5);
$d5g0 = $d5g->eval(x=>0);

########################################
# Main Text

Context()->texStrings;
BEGIN_TEXT
If \( g(t) = $a t^4 + $b t^2 + $c \) find
$BR$BR
\(g(0) =\)\{ans_rule(15) \} $BR$BR
\(g'(0) =\)\{ans_rule(15) \} $BR$BR
\(g''(0) =\)\{ans_rule(15) \} $BR$BR
\(g'''(0) =\)\{ans_rule(15) \} $BR$BR
\(g^{(4)}(0) =\)\{ans_rule(15) \} $BR$BR
\(g^{(5)}(0) =\)\{ans_rule(15) \} $BR
END_TEXT
Context()->normalStrings;

########################################
# Answers

ANS($g0->cmp);
ANS($dg0->cmp);
ANS($d2g0->cmp);
ANS($d3g0->cmp);
ANS($d4g0->cmp);
ANS($d5g0->cmp);

########################################

;
ENDDOCUMENT();
