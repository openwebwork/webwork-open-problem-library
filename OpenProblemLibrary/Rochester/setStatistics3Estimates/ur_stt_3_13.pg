## DBsection(One sample proportion)
## Institution(Rochester)
## MLT(CI_1p_03)
## Level(1)
## KEYWORDS('Confidence Interval')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGnumericalmacros.pl",
  "PGstatisticsmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(300,400,1);
$b = random(500,600,25);

@conf = ("\(80\)$PERCENT",
	 "\(90\)$PERCENT",
	 "\(95\)$PERCENT",
	 "\(98\)$PERCENT",
	 "\(99\)$PERCENT");
@slice = NchooseK(5,1);
@sconf = @conf[@slice];

$z1 = normal_distr(.4);
$z2 = normal_distr(.45);
$z3 = normal_distr(.475);
$z4 = normal_distr(.49);
$z5 = normal_distr(.495);

@z = ($z1, $z2, $z3, $z4, $z5);
@sz = @z[@slice];
$p = $a/$b;

$ans1 = ($p)-$sz[0]*sqrt($p*(1-$p)/$b);
$ans2 = ($p)+$sz[0]*sqrt($p*(1-$p)/$b);
 
BEGIN_TEXT
A poll is taken in which \($a\) out of \($b\) randomly selected voters indicated their preference for a certain
candidate.  Find a $sconf[0] confidence interval for \(p\). $BR
\{ans_rule(20)\} \(\leq p \leq\) \{ans_rule(20)\}
END_TEXT
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

ENDDOCUMENT();       # This should be the last executable line in the problem.
