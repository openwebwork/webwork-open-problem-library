DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a[0] = random(5,10,1);
$a[1] = random(11,20,1);
$a[2] = $a[1];
$c1 = $a[2]+3;
$c2 = $a[2]+6;
$a[3] = random($c1,$c2,1);
$d1 = $a[3]+3;
$d2 = $a[3]+6;
$a[4] = random($d1,$d2,1);
$e1 = $a[4]+3;
$e2 = $a[4]+6;
$a[5] = random($e1,$e2,1);
$f1 = $a[5]+5;
$f2 = $a[5]+10;
$a[6] = random($f1,$f2,1);
$g1 = $a[6]+5;
$g2 = $a[6]+10;
$a[7] = random($g1,$g2,1);
$h1 = $a[7]+5;
$h2 = $a[7]+10;
$a[8] = random($h1,$h2,1);

$mean = ($a[0]+$a[1]+$a[2]+$a[3]+$a[4]+$a[5]+$a[6]+$a[7]+$a[8])/9;

@set = ($a[0], $a[1], $a[2], $a[3], $a[4], $a[5], $a[6], $a[7], $a[8]);
@slice = NchooseK(9,9);
@sset = @set[@slice]; 

$var = 0;
for ($i=0; $i<9; $i+=1) {
	$b = ($a[$i] - $mean)**2;
	$var = $var+$b;
}


$range =$a[8]-$a[0] ;
$variance = $var/8;
$sd = sqrt($variance);

BEGIN_TEXT

Given the data set below, calculate the range, variance, and standard deviation. $PAR
\[  $sset[0], \ $sset[1], \ $sset[2], \ $sset[3], \ $sset[4], \ $sset[5], \
$sset[6], \ $sset[7], \ $sset[8] \] $BR

range \(=\) \{ans_rule(20)\}
variance \(=\) \{ans_rule(20)\}
standard deviation \(=\) \{ans_rule(20)\}




END_TEXT
ANS(num_cmp($range, mode=>"arith"));
ANS(num_cmp($variance, mode=>"arith"));
ANS(num_cmp($sd, mode=>"arith"));

ENDDOCUMENT();       # This should be the last executable line in the problem.
