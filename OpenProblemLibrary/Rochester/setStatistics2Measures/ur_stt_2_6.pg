## KEYWORDS('Measure', 'Mean', 'Median', 'Skew','statistics','measures','mean','median')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$median = random(-5,5,1);

$a3 = $median;
$a2 = random(-10,-5,1);
$a1 = random(-20,-11,1);
$a4 = random($a3,6,1);
$a5 = random($a4,7,1);

$b3 = $median;
$b2 = random(-6,$b3,1);
$b1 = random(-7,$b2,1);
$b4 = random(6,10,1);
$b5 = random(11,20,1);

$c3 = $median;
$d = random(1,3);
$e = random(5,9);
$f = random(1,3);
$g = $e + $d - $f;
$c4 = $c3 + $d;
$c5 = $c3 + $e;
$c2 = $c3 - $f;
$c1 = $c3 - $g;

@data1 = ($a1, $b1, $c1);
@data2 = ($a2, $b2, $c2);
@data4 = ($a4, $b4, $c4);
@data5 = ($a5, $b5, $c5);

$tag = random(0,2,1);

$median5 = $median * 5;
$mean5 = $data1[$tag] + $data2[$tag] + $median + $data4[$tag] + $data5[$tag];
$mean = $mean5 / 5;

if ($mean5 > $median5) {$ans='SR'};
if ($mean5 < $median5) {$ans='SL'};
if ($mean5 == $median5) {$ans='SYM'};

BEGIN_TEXT

Calculate the mean and median of the following data: 

\[ $data1[$tag], \ $data2[$tag], \ $median, \ $data4[$tag], \ $data5[$tag] \]

Mean = \{ans_rule(10)\} $BR

Median = \{ans_rule(10)\} $BR

Is this data set skewed to the right, symmetric, or skewed to the left? $BR

(Enter SR, SYM, or SL.)

\{ans_rule(10)\}

END_TEXT

ANS(num_cmp($mean));
ANS(num_cmp($median));
ANS(str_cmp($ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.
