DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$a = non_zero_random(1,5,1);
$b = non_zero_random(3,5,1);
$r = non_zero_random(1,3,1);
## (x-$a)^2+(y-$b)^2=$r^2
$b1 = 2*$a;
$b2 = 2*$b;
$c1 = $a**2+$b**2-$r**2;

BEGIN_TEXT
Find the center and radius of the circle given by the equation
\[x^2+y^2-$b1 x- $b2 y +$c1=0\]
$BR $BR
The center is : (\{ans_rule(10)\},\{ans_rule(10)\})
$BR 
The radius is : \{ans_rule(10)\}
$BR 
END_TEXT

$ans1 = $a;
$ans2 = $b;
$ans3 = $r;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));

ENDDOCUMENT();        # This should be the last executable line in the problem.

