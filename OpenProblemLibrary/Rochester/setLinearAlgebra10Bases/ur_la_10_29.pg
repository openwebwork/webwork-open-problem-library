DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"PGchoicemacros.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a[1][1] = non_zero_random(-4,4,1);
$a[2][1] = 0;

foreach $i (2..5) {
$a[1][$i] = random(-4,4,1);
$a[2][$i] = non_zero_random(-4,4,1);
}

$k = random(-2,2,1);
$l = random(-2,2,1);

foreach $i (1..5) {
$a[3][$i] = $k*$a[1][$i] + $l*$a[2][$i];
}

$x = random(3,5,1);

$a[3][$x] = $a[3][$x] + 1;

$m = random(-2,2,1);
$n = random(-1,1,1);
$p = random(-1,1,1);

foreach $i (1..5) {
        $a[4][$i] = $m*$a[1][$i] + $n*$a[2][$i] + $p*$a[3][$i];
}


@slice = NchooseK(4,4);

@rows = (  
  [ $a[1][1], $a[1][2], $a[1][3], $a[1][4], $a[1][5] ],
  [ $a[2][1], $a[2][2], $a[2][3], $a[2][4], $a[2][5] ],
  [ $a[3][1], $a[3][2], $a[3][3], $a[3][4], $a[3][5] ],
  [ $a[4][1], $a[4][2], $a[4][3], $a[4][4], $a[4][5] ], 
);

$A = Matrix(@rows[@slice]);


$image1 = Matrix([ $a[1][1], $a[1][2], $a[1][3], $a[1][4], $a[1][5] ]);
$image2 = Matrix([ $a[2][1], $a[2][2], $a[2][3], $a[2][4], $a[2][5] ]);
$image3 = Matrix([ $a[3][1], $a[3][2], $a[3][3], $a[3][4], $a[3][5] ]);


$image_multians = MultiAnswer($image1, $image2, $image3)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_rows,
);



Context()->texStrings;
BEGIN_TEXT
Find a basis of the row space of the matrix \[ A = $A.\]
$BR
Basis:
$BR$BR
\( \big\lbrace\) 
\{ $image_multians->ans_array(5) \}, 
$BR
\{ $image_multians->ans_array(5) \}, 
$BR
\{ $image_multians->ans_array(5) \} 
\( \big\rbrace.\)
END_TEXT
Context()->normalStrings;

ANS( $image_multians->cmp() );


;

ENDDOCUMENT();
