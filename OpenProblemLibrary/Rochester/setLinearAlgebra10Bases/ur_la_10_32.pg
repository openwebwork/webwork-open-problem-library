DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"PGchoicemacros.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix')->variables->are('x1'=>'Real','x2'=>'Real');

foreach $i (1..5) {
  $a[$i] = random(2,9,1)*random(-1,1,2);
}




$image1 = Matrix([ [1], [$a[1]], [$a[2]], [$a[4]] ]);
$image2 = Matrix([ [0], [1], [$a[3]], [$a[5]] ]);


$image_multians = MultiAnswer($image1, $image2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);


Context()->texStrings;
BEGIN_TEXT
Find a basis of the subspace of \({\mathbb R}^4\) consisiting of all vectors of the form
\[
\left\lbrack
\begin{array}{c}
x_1 \\
$a[1] x_1 + x_2 \\
$a[2] x_1 + $a[3] x_2 \\
$a[4] x_1 + $a[5] x_2
\end{array}
\right\rbrack
\]
$BR
$BR
Basis = 
\(\Bigg\lbrace\) 
\{ $image_multians->ans_array \}, 
\{ $image_multians->ans_array \} 
\(\Bigg\rbrace.\)
END_TEXT
Context()->normalStrings;

ANS( $image_multians->cmp() );

COMMENT('MathObject version');

