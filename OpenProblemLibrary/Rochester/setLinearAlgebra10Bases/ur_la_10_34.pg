DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$e = random(-1,1,2);
$f = non_zero_random(-3,3,1);
$g = random(-1,1,2);
$h = non_zero_random(-3,3,1);
$i = non_zero_random(-2,2,2);

$a = random(-9,9,1);
$b = non_zero_random(-9,9,1);
$c = random(-9,9,1);

$M1 = Matrix([[$e, $f], [0, 0]]);
$M2 = Matrix([[0, $g], [0, $h]]);
$M3 = Matrix([[0, 0], [0, $i]]);

$M = Matrix([[$a, $b], [0, $c]]);

$ans1 = $a * $e; 
$ans2 = ($b - $a * $f * $e) * $g;
$ans3 = ($c - $ans2* $h) / $i;

$answer = Matrix([[$ans1],[$ans2],[$ans3]]);

Context()->texStrings;
BEGIN_TEXT
The set \[ B = \left\lbrace $M1, $M2, $M3 \right\rbrace \]
is a basis of the space of upper-triangular \( 2\times 2\) matrices. 
$BR
$BR
Find the coordinates of \( M = $M \) with respect to this basis.
$BR
$BR
\([M]_B= \) \{ $answer->ans_array \}
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp );
;
ENDDOCUMENT(); 