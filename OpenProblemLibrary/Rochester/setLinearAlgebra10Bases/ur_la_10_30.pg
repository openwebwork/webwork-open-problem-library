DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a[1][1] = 0;
$a[2][1] = non_zero_random(-4,4,1);

foreach $i (2..4) {
$a[1][$i] = non_zero_random(-4,4,1);
$a[2][$i] = random(-4,4,1);
}

$k = random(-2,2,1);
$l = random(-2,2,1);

foreach $i (1..4) {
$a[3][$i] = $k*$a[1][$i] + $l*$a[2][$i];
}


$image1 = Matrix([ [$a[1][1]], [$a[2][1]], [$a[3][1]] ]);
$image2 = Matrix([ [$a[1][2]], [$a[2][2]], [$a[3][2]] ]);

@slice = NchooseK(4,4);

@cols = (
[$a[1][1], $a[2][1], $a[3][1]],
[$a[1][2], $a[2][2], $a[3][2]],
[$a[1][3], $a[2][3], $a[3][3]],
[$a[1][4], $a[2][4], $a[3][4]],
);

$A = Matrix(@cols[@slice])->transpose;


$image_multians = MultiAnswer($image1, $image2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);


Context()->texStrings;
BEGIN_TEXT
Find a basis for the column space of 
\[A=$A.\]
Basis = 
\(\Bigg\lbrace\) 
\{ $image_multians->ans_array \}, 
\{ $image_multians->ans_array \} 
\(\Bigg\rbrace.\)
END_TEXT
Context()->normalStrings;

ANS( $image_multians->cmp() );

;

ENDDOCUMENT();
