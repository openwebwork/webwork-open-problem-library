DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

$a1 = non_zero_random(-5,5,1);
$a2 = non_zero_random(-10,2,1);
$k = non_zero_random(-3,3,1);
$b1 = $a1 * $k;
$d = random(1,10,1);
$b2 = $a2 * $k + $d;

$m = non_zero_random(-3,3,1);
$n = random(-3,3,1);

$x1 = $a1 * $m + $b1 * $n;
$x2 = $a2 * $m + $b2 * $n;

$x = Matrix([ [$x1],[$x2] ]);

$xB = Matrix([ [$m],[$n] ]);

$a = Matrix([ [$a1],[$a2] ]);
$b = Matrix([ [$b1],[$b2] ]);

Context()->texStrings;
BEGIN_TEXT

The set
\[ B= \left\lbrace $a, $b \right\rbrace \]
is a basis for \( {\mathbb R}^2 \). 
Find the coordinates of the vector \(\vec{x}= $x \) relative to the basis \( B \). 
$BR
$BR
\( [\vec{x}]_B = \) \{ $xB->ans_array \}

END_TEXT
Context()->normalStrings;


ANS( $xB->cmp );
;

ENDDOCUMENT();       # This should be the last executable line in the problem.

