DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
$showPartialCorrectAnswers = 0;
TEXT(beginproblem()); 

Context('Matrix')->variables->are('k'=>'Real');

$a1 = random(1,7,1);
$a2 = random(-7,-1,1);
$a3 = 0;
$b1 = random(-7,-1,1);
$b2 = random(1,7,1);
while ($a1*$b2-$a2*$b1 == 0) {$b2 = random(1,7,1);}
$b3 = non_zero_random(-7,7,1);
$m = random(1,4,1);
$n = random(1,4,1);
$c1 = $m*$a1 + $n*$b1;
$c2 = $m*$a2 + $n*$b2;

$k = $m*$a3 + $n*$b3;

$v1 = Matrix([[$a1], [$a2], [$a3]]);
$v2 = Matrix([[$b1], [$b2], [$b3]]);
$v3 = Matrix([[$c1], [$c2], ["k"]]);

Context()->texStrings;
BEGIN_TEXT
The vectors
\[
\vec{v}_1 = $v1, \ \ \ \
\vec{v}_2 = $v2, \ \ \ \
\vec{v}_3 = $v3
\]
form a basis for \({\mathbb R}^3\) if and only if \(k\ne \) \{ans_rule(5)\}.
END_TEXT
Context()->normalStrings;

ANS(Compute("$k")->cmp);

;

