DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

do {

$a = random(-3,3,2);
$b = non_zero_random(-4,4,2);
$c = non_zero_random(-2,2,1);
$d = random(-3,3,2);

$k = non_zero_random(-3,3,1);
$l = non_zero_random(-3,3,1);
$m = non_zero_random(-2,2,1);
$n = random(-2,2,1);

$p = random(-1,1,1);
$q = random(-1,1,1);

$r = random(-1,1,1);
$s = random(-1,1,1);

$a11 = $k*$a;
$a12 = $l*$b;
$a13 = $m*$a + $n*$b;
$a14 = $n*$a - $m*$b;

$a21 = $k*$c;
$a22 = $l*$d;
$a23 = $m*$c + $n*$d;
$a24 = $n*$c - $m*$d;

$a31 = $p*$a11 + $q*$a21;
$a32 = $p*$a12 + $q*$a22;
$a33 = $p*$a13 + $q*$a23;
$a34 = $p*$a14 + $q*$a24;

$a41 = $r*$a11 + $s*$a21;
$a42 = $r*$a12 + $s*$a22;
$a43 = $r*$a13 + $s*$a23;
$a44 = $r*$a14 + $s*$a24;

$ml = $m*$l;
$kn = $k*$n;
$nl = $n*$l;

$mkl = - $k * $l;
$mkm = - $k * $m;
 
} until ($a41 != 0 or $a42 != 0 or $a43 !=0 or $a44 != 0);


$A = Matrix([
[$a11, $a12, $a13, $a14], 
[$a21, $a22, $a23, $a24],
[$a31, $a32, $a33, $a34],
[$a41, $a42, $a43, $a44],
]);


$kernel1 = Matrix([[$ml], [$kn], [$mkl], [0]]);
$kernel2 = Matrix([[$nl], [$mkm], [0], [$mkl]]);

$kernel_multians = MultiAnswer($kernel1, $kernel2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);


Context()->texStrings;
BEGIN_TEXT
Let \[A=$A.\]
$BR
Find a basis for the kernel of \(A\) (or, equivalently, for the linear transformation \(T(x)=Ax\)).
$BR
$BR
A basis for the kernel of \( A \) is 
$BR
$BR
\(\Bigg\lbrace\) 
\{ $kernel_multians->ans_array \}, 
\{ $kernel_multians->ans_array \} 
\(\Bigg\rbrace.\)
END_TEXT
Context()->normalStrings;

ANS( $kernel_multians->cmp() );

;

ENDDOCUMENT();
