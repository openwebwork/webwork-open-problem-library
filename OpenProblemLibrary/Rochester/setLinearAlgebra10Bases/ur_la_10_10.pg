DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(-4,4,1);
$b = non_zero_random(-4,4,2);
if ($a == $b) { $a=$a+1; }

$k = non_zero_random(-3,3,1);
$l = non_zero_random(-3,3,1);
$m = random(-3,3,1);

$a11 = $k*$a;
$a12 = $k*$b;
$a21 = $l*$a;
$a22 = $l*$b;
$a31 = $m*$a;
$a32 = $m*$b;

$nb = - $b;

$A = Matrix([[$a11, $a12], [$a21, $a22], [$a31, $a32]]);

$kernel = Matrix([[$nb], [$a]]);

$image = Matrix([ [$k],[$l],[$m] ]);

 
Context()->texStrings;
BEGIN_TEXT
Let \[A=$A.\]
$BR
Find bases for the kernel and image of \(A\) (or, equivalently, for the linear transformation \(T(x)=Ax\)).
$BR
$BR
A basis for the kernel of \( A \) is 
\(\Bigg\lbrace\) 
\{ $kernel->ans_array \} 
\(\Bigg\rbrace.\)
$BR
$BR
A basis for the image of \( A \) is 
\(\Bigg\lbrace\) 
\{ $image->ans_array \} 
\(\Bigg\rbrace.\)
END_TEXT
Context()->normalStrings;

ANS( $kernel->cmp( checker=> ~~&basis_checker_one_column ) );

ANS( $image->cmp( checker=> ~~&basis_checker_one_column ) );

;

ENDDOCUMENT();
