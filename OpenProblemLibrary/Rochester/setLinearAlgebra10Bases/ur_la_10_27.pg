DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(-9,9,1);
$b = non_zero_random(-9,9,1);
$c = non_zero_random(-9,9,1);
$d = non_zero_random(-9,9,1);

$vec1 = Matrix([[1], [0], [$a], [$b]]);
$vec2 = Matrix([[0], [1], [$c], [$d]]);


$image1 = Matrix([[$a], [$c], [-1], [0]]);
$image2 = Matrix([[$b], [$d], [0], [-1]]);

$image_multians = MultiAnswer($image1, $image2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT
Find a basis of the subspace of \({\mathbb R}^4\) that consists of all
vectors perpendicular to both 
\[ $vec1 \ \ \ \ \mbox{and} \ \ \ \ $vec2. \]
$BR
$BR
Basis: \(\Bigg\lbrace\) 
\{ $image_multians->ans_array \}, 
\{ $image_multians->ans_array \} 
\(\Bigg\rbrace.\)
END_TEXT
Context()->normalStrings;

ANS( $image_multians->cmp() );


COMMENT('MathObject version');

ENDDOCUMENT();
