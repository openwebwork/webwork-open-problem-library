DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

$a = random(2,8,1);
$b = random(2,8,1);
$c = random(-8,-2,1);

$x1 = non_zero_random(-5,5,1);
$x2 = non_zero_random(-5,5,1);
$x3 = random(-5,5,1);

$ans1 = $x1;
$ans2 = $x2 - $a*$x1;
$ans3 = $x3 - $c*$x2 + ($a*$c - $b)*$x1;

$x = Matrix([[$x1], [$x2], [$x3]]);

$basis1 = Matrix([[1], [$a], [$b]]);
$basis2 = Matrix([[0], [1], [$c]]);
$basis3 = Matrix([[0],[0],[1]]);

$xB = Matrix([ [$ans1], [$ans2], [$ans3] ]);

Context()->texStrings;
BEGIN_TEXT

Find the coordinate vector of 
\( \vec{x} = $x \)
with respect to the basis
\( B= \left\lbrace $basis1, $basis2, $basis3 \right\rbrace \) for \( {\mathbb R}^3 \).
$BR
$BR
\( [\vec{x}]_B = \) \{ $xB->ans_array \}

END_TEXT
Context()->normalStrings;

ANS( $xB->cmp );

;
ENDDOCUMENT();       # This should be the last executable line in the problem.

