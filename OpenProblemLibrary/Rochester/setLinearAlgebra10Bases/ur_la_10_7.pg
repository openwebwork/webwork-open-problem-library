DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$b = non_zero_random(-4,4,1);
$c = non_zero_random(-4,4,1);
if ($b==$c) { $c=$c+1; } 

$k = non_zero_random(-4,4,1);
$l = random(-4,4,1);

$a11 = $k*$b;
$a12 = $l*$b;
$a21 = $k*$c;
$a22 = $l*$c;

$m = - $l;

$A = Matrix([[$a11, $a12], [$a21, $a22]]);

$kernel = Matrix([ [$m], [$k] ]);

$image = Matrix([ [$b], [$c] ]);

Context()->texStrings;
BEGIN_TEXT
Let \[A=$A.\]
$BR
Find bases for the kernel and image of \(T(\vec{x}) = A \vec{x} \).
$BR
$BR
A basis for the kernel of \( A \) is 
\(\Bigg\lbrace\) 
\{ $kernel->ans_array \} 
\(\Bigg\rbrace.\)
$BR
$BR
A basis for the image of \( A \) is 
\(\Bigg\lbrace\) 
\{ $image->ans_array \} 
\(\Bigg\rbrace.\)
END_TEXT
Context()->normalStrings;


ANS( $kernel->cmp( checker=> ~~&basis_checker_one_column ) );

ANS( $image->cmp( checker=>  ~~&basis_checker_one_column ) );

;

ENDDOCUMENT();

