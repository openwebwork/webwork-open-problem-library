DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');


$a = random(-3,3,2);
$b = non_zero_random(-4,4,2);
$c = non_zero_random(-2,2,1);
$d = random(-3,3,2);

$k = non_zero_random(-3,3,1);
$l = non_zero_random(-3,3,1);
$m = random(-2,2,1);
$n = random(-2,2,1);

$p = random(-1,1,1);
$q = random(-1,1,1);

$a11 = $k*$a;
$a12 = $l*$b;
$a13 = $m*$a+$n*$b;

$a21 = $k*$c;
$a22 = $l*$d;
$a23 = $m*$c+$n*$d;

$a31 = $p*$a11 + $q*$a21;
$a32 = $p*$a12 + $q*$a22;
$a33 = $p*$a13 + $q*$a23;

$r = $p*$a + $q*$c;
$s = $p*$b + $q*$d;

$A = Matrix([
[$a11, $a12, $a13], 
[$a21, $a22, $a23],
[$a31, $a32, $a33],
]);


$image1 = Matrix([[$a], [$c], [$r]]);
$image2 = Matrix([[$b], [$d], [$s]]);

$image_multians = MultiAnswer($image1, $image2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);


Context()->texStrings;
BEGIN_TEXT
Let \[A=$A.\]
$BR
Find a basis for the image of \(A\) (or, equivalently, for the linear transformation \(T(x)=Ax\)).
$BR
$BR
A basis for the image of \( A \) is 
\(\Bigg\lbrace\) 
\{ $image_multians->ans_array \}, 
\{ $image_multians->ans_array \} 
\(\Bigg\rbrace.\)
END_TEXT
Context()->normalStrings;

ANS( $image_multians->cmp() );

;

ENDDOCUMENT();
