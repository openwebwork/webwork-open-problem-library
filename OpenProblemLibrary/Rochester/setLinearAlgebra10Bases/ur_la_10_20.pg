DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = non_zero_random(-9,9,1);
$b = random(-9,9,1);
$c = non_zero_random(-9,9,1);
$d = random(-9,9,1);

$ma = - $a;


$kernel = Matrix([[$a], [$b], [$c], [$d]]);

$image1 = Matrix([[$b], [$ma], [0], [0]]);
$image2 = Matrix([[$c], [0], [$ma], [0]]);
$image3 = Matrix([[$d], [0], [0], [$ma]]);

$image_multians = MultiAnswer($image1, $image2, $image3)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);



Context()->texStrings;
BEGIN_TEXT
Let \( L \) be the line given by the span of \( $kernel \) in \( \mathbb{R}^3 \). 
Find a basis for the orthogonal complement \( L^{\bot} \) of \( L \).
$BR
$BR
A basis for \(L^{\bot}\) is \(\Bigg\lbrace\) 
\{ $image_multians->ans_array \}, 
\{ $image_multians->ans_array \}, 
\{ $image_multians->ans_array \} 
\(\Bigg\rbrace.\)
END_TEXT
Context()->normalStrings;

ANS( $image_multians->cmp() );


COMMENT('MathObject version');

