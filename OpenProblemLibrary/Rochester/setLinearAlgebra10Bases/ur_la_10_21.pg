DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

# m by n matrix of rank k, 
# dim ker = n-k
# dim im = k 

$m = random(2,3,1);
$n = 5-$m;
$k = random(1,2,1);

$ker = $n - $k;
$im = $k;



# first create a 2 by 2 matrix of rank 1
# then will add a column or row that is a linear combination of the first two columns/rows with weights p and q

if ($k == 1) { 
	$a = random(-2,2,1);
	$b = non_zero_random(-2,2,1);
	$k = non_zero_random(-2,2,1);
	$l = random(-2,2,1);
	$a11 = $k*$a; 
	$a12 = $k*$b;
	$a21 = $l*$a;
	$a22 = $l*$b;
} else { 
        $a11 = random(-4,4,1);
        $a12 = random(-3,3,2);
        $a21 = random(-3,3,2);
        $a22 = random(-4,4,2);
}

        
$p = random(-2,2,1);
$q = random(-2,2,1);

if ($m == 2) { 
	$a13 = ($p*$a11 + $q*$a12);
	$a23 = ($p*$a21 + $q*$a22);

$A = Matrix([
[$a11,$a12,$a13],
[$a21,$a22,$a23],
]);

} else { 
        $a31 = ($p*$a11 + $q*$a21);
        $a32 = ($p*$a12 + $q*$a22);

$A = Matrix([
[$a11,$a12],
[$a21,$a22],
[$a31,$a32],
]);

}



Context()->texStrings;
BEGIN_TEXT

Let \[A=$A.\]
Find dimensions of the kernel and image of \( T(\vec{x}) = A \vec{x} \).
$BR
\( {\rm dim } ({\rm Ker } (A)) = \) \{ans_rule(5)\}, 
$BR
\( {\rm dim } ({\rm Im } (A)) = \) \{ans_rule(5)\}. 

END_TEXT
Context()->normalStrings;

ANS(Compute("$ker")->cmp);
ANS(Compute("$im")->cmp);

;
ENDDOCUMENT();       # This should be the last executable line in the problem.

