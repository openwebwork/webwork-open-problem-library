DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

do {
$a = non_zero_random(-4,4,1);
$b = non_zero_random(-4,4,1);
} until ($a != $b);
$c = non_zero_random(-4,4,1);

$k = non_zero_random(-3,3,1);
$l = non_zero_random(-3,3,1);
$m = random(-3,3,1);
if (($k == $m) or ($l == $m)) { $m = 4; } 

$a11 = $k*$a;
$a12 = $k*$b;
$a13 = $k*$c;
$a21 = $l*$a;
$a22 = $l*$b;
$a23 = $l*$c;
$a31 = $m*$a;
$a32 = $m*$b;
$a33 = $m*$c;

BEGIN_TEXT
\{ mbox( 'Let \(A=\)', display_matrix([[$a11, $a12, $a13], [$a21, $a22, $a23], [$a31, $a32, $a33]]), '.' ) \} 
$BR
Find a basis of the kernel of \(A\) (or the linear transformation \(T(x)=Ax\)).
$BR
\{mbox( ans_array(3,1,5), ',', ans_array_extension(3,1,5), '.' )\}

END_TEXT

$na = - $a;

ANS(basis_cmp([[$c, 0, $na], [$b, $na, 0]]));

ENDDOCUMENT();       # This should be the last executable line in the problem.

