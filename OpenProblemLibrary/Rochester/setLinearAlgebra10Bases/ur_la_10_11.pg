DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

do {
$a = non_zero_random(-4,4,1);
$b = non_zero_random(-4,4,1);
} until ($a != $b);
$c = non_zero_random(-4,4,1);

$k = non_zero_random(-3,3,1);
$l = non_zero_random(-3,3,1);
$m = random(-3,3,1);
if (($k == $m) or ($l == $m)) { $m = 4; } 

$a11 = $k*$a;
$a12 = $k*$b;
$a13 = $k*$c;
$a21 = $l*$a;
$a22 = $l*$b;
$a23 = $l*$c;
$a31 = $m*$a;
$a32 = $m*$b;
$a33 = $m*$c;

$na = - $a;


$A = Matrix([
[$a11, $a12, $a13], 
[$a21, $a22, $a23],
[$a31, $a32, $a33],
]);


$kernel1 = Matrix([[$c], [0], [$na]]);
$kernel2 = Matrix([[$b], [$na], [0]]);

$kernel_multians = MultiAnswer($kernel1, $kernel2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT
Let \[A=$A.\]
$BR
Find a basis for the kernel of \(A\) (or, equivalently, for the linear transformation \(T(x)=Ax\)).
$BR
$BR
A basis for the kernel of \( A \) is 
\(\Bigg\lbrace\) 
\{ $kernel_multians->ans_array \}, 
\{ $kernel_multians->ans_array \} 
\(\Bigg\rbrace.\)
END_TEXT
Context()->normalStrings;

ANS( $kernel_multians->cmp() );

;

ENDDOCUMENT();
