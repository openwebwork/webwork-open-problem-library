DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(20,11,1);
$b = random(2,11,1);

$k = 1;
$l = 1;
$m = 1;

for ($i=2; $i<$a+1; $i+=1){
  $k = $k*$i;
}

for ($i=2; $i<$b+1; $i+=1){
  $l = $l*$i;
}

for ($i=2; $i<$a-$b+1; $i+=1){
  $m = $m*$i;
}

$ans = $k/$l/$m;

BEGIN_TEXT

Evaluate the binomial coefficient: \( {$a}\choose{$b} \) $BR
\{ans_rule(20)\}

END_TEXT
ANS(num_cmp($ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.
