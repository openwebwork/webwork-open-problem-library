## DESCRIPTION
##   The Binomial Theorem and Binomial Expansions
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Algebra)
## DBchapter(Finite sequences and series)
## DBsection(Binomial theorem)
## Institution(Rochester)
## Level(3)
## KEYWORDS('Binomial Theorem', 'Binomial Expansion', 'Coefficient')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = random(2,5,1);
$c = random(1,5,1);
@e = (4,5,7,8);
$tag = random(0,3,1);
$d = $e[$tag];
$m = random(1,$d-1,1);
$a = 3*$m-$d;

$j = 1;
$k = 1;
$l = 1;

for ($i=2; $i<$d+1; $i+=1){
  $j = $j*$i;
}

for ($i=2; $i<$m+1; $i+=1){
  $k = $k*$i;
}

for ($i=2; $i<$d-$m+1; $i+=1){
  $l = $l*$i;
}


$ans = (-1)**($d-$m)*$j/$k/$l*($b**($m))*($c**($d-$m));

BEGIN_TEXT

Find the coefficient of \( x^{$a}\) in the expansion of 
\( \displaystyle \left( $b x^2 -\frac{$c}{x} \right) ^{$d} \) $BR

\{ans_rule(20)\}

END_TEXT

ANS(num_cmp($ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.
