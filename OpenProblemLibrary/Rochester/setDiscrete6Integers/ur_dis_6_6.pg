DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


$m1 = random(4,9,1);
$a1 = random(2,9,1);
$c1 = random(2,9,1);
$x1[0] = random(1,5,1);

$m2 = random(4,9,1);
$a2 = random(2,9,1);
$c2 = random(2,9,1);
$x2[0] = random(1,5,1);

while($m1==$m2) {$m2 = random(2,9,1);}
while($a1==$a2) {$a2 = random(2,9,1);}
while($c1==$c2) {$c2 = random(2,9,1);}
while($x1[0]==$x2[0]) {$x2[0] = random(2,9,1);}

for($i = 1; $i < 7; $i++) {
	$x1[$i] = ($a1*$x1[($i-1)] + $c1) % $m1;
	$x2[$i] = ($a2*$x2[($i-1)] + $c2) % $m2;
}

BEGIN_TEXT
Find the first few terms of the sequence of pseudorandom numbers 
generated using the linear congruential generator $BR
\( x_{n+1} = ($a1 x_n + $c1) \text{ mod } $m1 \) with seed \( x_0= $x1[0] \)? $BR
\(x_1 = \) \{ ans_rule(10) \}
\(x_2 = \) \{ ans_rule(10) \}
\(x_3 = \) \{ ans_rule(10) \}
\(x_4 = \) \{ ans_rule(10) \}
\(x_5 = \) \{ ans_rule(10) \}
\(x_6 = \) \{ ans_rule(10) \}
END_TEXT

ANS(num_cmp($x1[1]) );
ANS(num_cmp($x1[2]) );
ANS(num_cmp($x1[3]) );
ANS(num_cmp($x1[4]) );
ANS(num_cmp($x1[5]) );
ANS(num_cmp($x1[6]) );

BEGIN_TEXT
$BR
Now find the first few terms of the sequence of pseudorandom numbers 
generated using the linear congruential generator $BR
\( x_{n+1} = ($a2 x_n + $c2) \text{ mod } $m2 \) with the seed \( x_0 = $x2[0] \)? $BR
\(x_1 = \) \{ ans_rule(10) \}
\(x_2 = \) \{ ans_rule(10) \}
\(x_3 = \) \{ ans_rule(10) \}
\(x_4 = \) \{ ans_rule(10) \}
\(x_5 = \) \{ ans_rule(10) \}
\(x_6 = \) \{ ans_rule(10) \}
$PAR
END_TEXT

