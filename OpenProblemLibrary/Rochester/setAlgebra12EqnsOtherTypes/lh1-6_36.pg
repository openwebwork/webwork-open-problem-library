loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

@const=(4,8,-2);
@ans=(1,6,-6);
$index=random(0,2,1);
$c=$const[$index];
$ans=$ans[$index];

# sqrt{10-x}+x=$c


BEGIN_TEXT

Solve the equation \(\sqrt{10-x} + x=$c\).
$BR $BR 
The only solution is \( x = \) \{ans_rule(15) \}.
$BR
END_TEXT

ANS(num_cmp($ans));

