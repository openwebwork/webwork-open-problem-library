## DESCRIPTION
##   Solve an Equation
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Algebra)
## DBchapter(Functions with fractional exponents and radical functions)
## DBsection(Equations)
## Date(Spring 2002)
## Institution(Rochester)
## Author(Mark Schmitt)
## Level(3)
## KEYWORDS('Solve', 'Equation')

DOCUMENT();        # This should be the first executable line in the problem.


loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$A = non_zero_random(-9,9,1);
$B = non_zero_random(-9,9,1);
$C = non_zero_random(-9,9,1);
$D = non_zero_random(-9,9,1);

while ($A==$C) {$C = non_zero_random(-9,9,1);}

$ans = ($D-$B)/($A-$C);
if ($A*$ans +$B < 0 || $C*$ans + $D < 0) {$ans2 = 'no';}
else {$ans2 = 'yes';}

$ans = Round($ans,3);

BEGIN_TEXT;
Solve for the only possible solution.  Give your answer to the nearest thousandth.
$PAR
\[\sqrt{$A x + $B} = \sqrt{$C x + $D}\]
$BR
$BR
\(x = \) \{ans_rule(10)\}.
$BR
Does your solution satisfy the equation? (yes or no) \{ans_rule(10)\}
$BR
END_TEXT
ANS(num_cmp($ans));
ANS(str_cmp($ans2));
ENDDOCUMENT();        # This should be the last executable line in the problem.


