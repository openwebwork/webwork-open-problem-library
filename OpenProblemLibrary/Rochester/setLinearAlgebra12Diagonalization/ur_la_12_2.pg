DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix')->variables->are(n => ['Real', limits=>[-5,5], resolution=>1]);

$a = non_zero_random(-2,2,1);
$b = 2/$a;
$s = random(-1,1,2);
$c = random(2,9,1);

$m11 = 2*$c;
$m12 = - $s*$a*$c;
$m21 = $s*$b*$c;
$m22 = - $c;

$ans11 = Compute("2*($c**n)");
$ans12 = Compute("- $s*$a*($c**n)");
$ans21 = Compute("$s*$b*($c**n)");
$ans22 = Compute("- $c**n");

$M = Matrix([[$m11, $m12], [$m21, $m22]]);

$ans = Matrix([[$ans11,$ans12],[$ans21,$ans22]]);

Context()->texStrings;
BEGIN_TEXT
Let \[ M = $M. \]
Find formulas for the entries of \(M^n\), where \(n\) is a positive integer.
$BR
$BR
$BCENTER
\(M^n=\) \{ $ans->ans_array(30) \}
$ECENTER
END_TEXT
Context()->normalStrings;

ANS( $ans->cmp );

;
ENDDOCUMENT();
