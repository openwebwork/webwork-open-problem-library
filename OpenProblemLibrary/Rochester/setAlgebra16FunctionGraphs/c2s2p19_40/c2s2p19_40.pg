$pictSet=random(1,1,1);  # Choose one of the three picture sets
#$pictSetname = $pictSet.".gif";
$ml->qa (
"\( 3 \) ",
image($pictID[$pictSet][0],tex_size=>200),
"\( 2x+3 \)" ,
image($pictID[$pictSet][1],tex_size=>200),
"\(  -x+4 \) ",
