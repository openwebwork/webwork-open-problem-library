DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",

  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$fact=random(1.5,6,.1);
$point=random(.5,5,.1);
$exponent=random(.7,2.3,.2);

#Context("Formula");

$P = Formula("$fact * x^($exponent)");
$dP = $P->D;


Context("Numeric");
Context()->flags->set(
  tolerance => 0.0001,
  tolType => "absolute",
);

$ans=Compute($dP->eval(x=>$point));

BEGIN_TEXT
Let \( p(x)= \{$P->TeX\} \).
Use a calculator or a graphing program to find the slope of the tangent line to the point \( \left(x,p(x)\right) \) at \( x= $point \).

$BR$BR

slope = \{ans_rule(30)\}

$BR$BR

Give the answer to 3 decimal places.
END_TEXT

ANS($ans->cmp);
ENDDOCUMENT();        # This should be the last executable line in the problem.
