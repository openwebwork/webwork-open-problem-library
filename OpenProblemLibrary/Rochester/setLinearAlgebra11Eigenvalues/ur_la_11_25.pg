DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

# choose eigenvalues

$one = random(-6,2,1);
$two = random($one+1, 6, 1);
while (abs($one * $two) > 15) { $two = random($one+1, 6, 1); }

$order = random(0,1,1);
if ($order == 1) { 
	$save = $one; 
	$one = $two; 
	$two = $save; 
}

# this will be an invertible matrix with determinant either 1 or -1

$a = random(-3,3,2);
$c = non_zero_random(-2,2,1);
$d = random(-3,3,2);
$det = random(-1,1,2);
$b = ($a*$d-$det)/$c;

# the inverse is then

$k = $d/$det;
$l = - $b/$det;
$m = - $c/$det;
$n = $a/$det;

# calculate the matrix 

$s = $a * $one * $k + $b * $two * $m;
$t = $a * $one * $l + $b * $two * $n;
$u = $c * $one * $k + $d * $two * $m;
$v = $c * $one * $l + $d * $two * $n;

$v1 = Matrix([[$a], [$c]]);
$v2 = Matrix([[$b], [$d]]);

$A = Matrix([[$s, $t], [$u, $v]]);

Context()->texStrings;
BEGIN_TEXT
Given that \(\vec{v}_1=$v1\) and \(\vec{v}_2=$v2\)
are eigenvectors of the matrix \[A=$A\]
determine the corresponding eigenvalues.
$BR
$BR
\( \lambda_1 = \) \{ans_rule(5)\}. $BR
\( \lambda_2 = \) \{ans_rule(5)\}.
END_TEXT
Context()->normalStrings;

ANS(Compute("$one")->cmp);
ANS(Compute("$two")->cmp);

;
ENDDOCUMENT();
