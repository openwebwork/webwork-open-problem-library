DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$u1 = random(-5,5,1);
$v1 = random(-5,5,1);
$u2 = random(-5,5,1);
$v2 = random(-5,5,1);

$det = $u1*$v2 - $v1*$u2;

while ($det == 0) { 
	$u1=$u1+1; 
	$v2=$v2+1; 
	$det = $u1*$v2 - $v1*$u2;
} 

$e = random(1,10,1);
$f = random(-10,-1,1);

## matrix [u v] is invertible, Au=eu, Av=fv, so A[u v] = [eu, fv]
## A = [eu, fv] [u v]^{-1}

$a11 = ($e*$u1*$v2 - $f*$v1*$u2)/$det;
$a12 = (- $e*$u1*$v1 + $f*$v1*$u1)/$det;
$a21 = ($e*$u2*$v2 - $f*$v2*$u2)/$det;
$a22 = (- $e*$u2*$v1 + $f*$v2*$u1)/$det;

$A = Matrix([[$a11,$a12],[$a21,$a22]]);

$vec1 = Matrix([[$u1], [$u2]]);
$vec2 = Matrix([[$v1], [$v2]]);

Context()->texStrings;
BEGIN_TEXT
Find a \(2\times 2\) matrix \(A\) such that 
\[ $vec1, \ \ \ \mbox{ and } \ \ \ $vec2 \] 
are eigenvectors of \(A\) with eigenvalues \($e\) and \($f\), respectively. 
$BR
$BR
\(A=\) \{ $A->ans_array \}
END_TEXT
Context()->normalStrings;

ANS( $A->cmp );

;
ENDDOCUMENT();
