DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a[0] = random(-9,-2,1);
$a[1] = random($a[0]+1,5,1);
$a[2] = random($a[1]+1,9,1);

@slice = NchooseK(3,3);

$a12 = random(-9,9,1);
$a13 = non_zero_random(-9,9,1);
$a23 = random(-9,9,1);

$B = Matrix([ 
[ $a[$slice[0]], $a12,          $a13],
[0,             $a[$slice[1]], $a23], 
[0,             0,             $a[$slice[2]] ]
]);

Context()->texStrings;
BEGIN_TEXT
Find the three distinct real eigenvalues of the matrix \[ B = $B. \]
The eigenvalues are \{ ans_rule(20) \}.  (Enter your answers as a comma separated list.)
END_TEXT
Context()->normalStrings;

$answer = List(Compute("$a[$slice[0]]"),Compute("$a[$slice[1]]"),Compute("$a[$slice[2]]"));

ANS($answer->cmp);

;
ENDDOCUMENT();
