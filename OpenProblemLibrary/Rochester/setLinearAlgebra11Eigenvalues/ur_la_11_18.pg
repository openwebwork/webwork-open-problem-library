DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"MatrixUnits.pl",
"PGcourse.pl",
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = GL3Z();

$a_det = $a->det;

# define inverse matrix

$b = $a->inverse;

# define eigenvalue
$eig = non_zero_random(-4,4,1);

$e = Matrix([
[$eig,0,0],
[0,$eig,non_zero_random(-2,2,1)],
[0,0,$eig],
]);

# define final matrix
$matrix = $a * $e *$b;
$matrix_det = $matrix->det;

$A = $matrix;

$basis1 = $a->column(1); # Matrix([[$a11], [$a21], [$a31]]);
$basis2 = $a->column(2); # Matrix([[$a12], [$a22], [$a32]]);

$multians = MultiAnswer($basis1, $basis2)->with(
  singleResult => 1,
  allowBlankAnswers => 0,
  separator => ',',
  tex_separator => ',',
  checker => ~~&basis_checker_columns
);

Context()->texStrings;
BEGIN_TEXT
The matrix \[A=$A\]
has one real eigenvalue. Find this eigenvalue and a basis of the eigenspace. 
$BR
$BR
The eigenvalue is \{ans_rule(10)\}.
$BR
$BR
A basis for the eigenspace is 
\(\Bigg\lbrace\) 
\{ $multians->ans_array(3,1,5) \}, 
\{ $multians->ans_array(3,1,5) \} 
\(\Bigg\rbrace.\)
END_TEXT
Context()->normalStrings;

ANS(Compute($eig)->cmp);
ANS($multians->cmp);

;
