DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix')->variables->are(x=>'Real');

$a = random(-10,10,1);
$b = random(-10,10,1);
$c = random(-10,10,1);
$d = random(-10,10,1);

$A = Matrix([[$a, $b], [$c, $d]]);

$neg_trace = - $a - $d;
$det = $a * $d - $b * $c;

$ans = Formula("x^2 + $neg_trace * x + $det")->reduce;

Context()->texStrings;
BEGIN_TEXT
Find the characteristic polynomial of the matrix 
\[ A = $A. \]
\( p(x) = \) \{ans_rule(20)\}.
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
;
ENDDOCUMENT();
