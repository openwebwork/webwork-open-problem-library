DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$eig = random(-9,9,1);


# define invertible matrix
        $a11 = random(-1,1,2);
        $a12 = non_zero_random(-3,3,1);
        $mult = non_zero_random(-2,2,1);
        $a21 = $mult * $a11;
        $b1 = random(-1,1,2);
        $a22 = $mult * $a12 + $b1;

        $a = Matrix([[$a11,$a12],[$a21,$a22]]);
        $b = $a->inverse;

        $a_det = $a11 * $b1;

    $e = Matrix([[$eig,non_zero_random(-2,2,1)],[0,$eig]]);

# define final matrix
        $matrix = $a * $e *$b;

$A = $matrix;

Context()->texStrings;
BEGIN_TEXT
The matrix \[ A = $A \]
has one eigenvalue of multiplicity 2. Find this eigenvalue and the dimension of its associated eigenspace. 
$BR
$BR
The eigenvalue \{ans_rule(10)\} has an associated eigenspace with dimension \{ans_rule(10)\}.
END_TEXT
Context()->normalStrings;

ANS(Compute("$eig")->cmp);
ANS(Compute("1")->cmp);

;
