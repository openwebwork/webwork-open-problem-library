DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

# create an invertible matrix with det either 1  or -1

$a11 = random(-2,2,1);
$a21 = random(-1,1,2);
$a31 = random(-1,1,2);

$b1 = random(-1,1,2);
$a12 = $b1 * $a11;
$m = random(-1,1,2);
$a22 = $b1 * $a21 + $m;
$a32 = $b1 * $a31;

$c = random(-1,1,1);
$d = random(-1,1,2);
$n = random(-1,1,2);
$a13 = $c * $a11 + $d * $a12 + $n;
$a23 = $c * $a21 + $d * $a22;
$a33 = $c * $a31 + $d * $a32;

$det = - $a31 * $m * $n;

# define matrix

$a = Matrix([
[$a11,$a12,$a13],
[$a21,$a22,$a23],
[$a31,$a32,$a33],
]);
$a_det = $a->det;

# define inverse matrix
$b = $a->inverse;

# define eigenvalues 

$eig = random(-4,4,1);



$mult = random(1,3,2);	
$m = non_zero_random(-2,2,1);

if ($mult == 1) { 

     $e = Matrix([
     [$eig,0,0],
     [0,0,$m],
     [0,-1*$m,0],
     ]);
     $dim = 1;

} else { 

	$dim = random(1,2,1);
	if ($dim == 1) { 
		$n = non_zero_random(-2,2,1);
                $e = Matrix([
                [$eig,$n,0],
                [0,$eig,$m],
                [0,0,$eig],
                ]);
	} else {
                $e = Matrix([
                [$eig,0,0],
                [0,$eig,$m],
                [0,0,$eig],
                ]);
        }

}

# define final matrix
        $matrix = $a * $e *$b;

$A = $matrix;

Context()->texStrings;
BEGIN_TEXT
The matrix \[A=$A\]
has one real eigenvalue. Find this eigenvalue, its multiplicity, and the dimension of the corresponding eigenspace. 
$BR
$BR
The eigenvalue = \{ans_rule(10)\} 
has multiplicity = \{ans_rule(10)\} and the
dimension of the corresponding eigenspace is \{ans_rule(10)\}.
END_TEXT
Context()->normalStrings;

ANS(Compute("$eig")->cmp);
ANS(Compute("$mult")->cmp);
ANS(Compute("$dim")->cmp);
COMMENT('MathObject version');
ENDDOCUMENT();