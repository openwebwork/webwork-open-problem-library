## DESCRIPTION
##   Equation of a Sphere
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Calculus - multivariable)
## DBchapter(Concepts for multivariable functions)
## DBsection(Quadratic surfaces)
## Date(6/3/2002)
## MLT(qs_sphere_find_center_radius)
## Level(3)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('6')
## Section1('12.1')
## Problem1('15 16 17 18')
## KEYWORDS('Sphere', 'Center', 'Radius', 'equation')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-10, 10);
$b = random(-10, 10);
$c = random(-10, 10);
$d = random(1, 10);
$a2 = 2 * $a; $b2 = 2 * $b; $c2 = 2 * $c;
$rhs = ($d)**2 - ($a)**2 - ($b)**2 - ($c)**2;

BEGIN_TEXT
$PAR
Find the center and radius of the sphere

$PAR
\( x^2 - ${a2}x + y^2 - ${b2}y + z^2 - ${c2}z = $rhs \)

$PAR Center: ( \{ ans_rule(6) \}, \{ ans_rule(6) \}, \{ ans_rule(6) \})
END_TEXT
ANS(num_cmp($a));
ANS(num_cmp($b));
ANS(num_cmp($c));

BEGIN_TEXT
$PAR
Radius: \{ ans_rule(10) \}
END_TEXT
ANS(num_cmp($d));

ENDDOCUMENT();
