## DBsection(Prediction)
## Institution(Rochester)
## Level(4)
## KEYWORDS('Confidence', 'Interval')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGnumericalmacros.pl",
"PGstatisticsmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$s = random(2,9,.1);
$b1 = random(30,50,1);
$ssx = random(40,70,1);
$n = random(10,25);
$df = $n-2;


@perc = ("80", "90", "95", "98", "99");
@slice = NchooseK(5,2);
@sperc = @perc[@slice];
@alpha = (".2", ".1". ".05",".02", ".01");

$alpha[0] = 1-($sperc[0]/100);
$alpha[1] = 1-($sperc[1]/100);

$a1 = $alpha[0]/2;
$t1 = tdistr($df,$a1);
$s1 = $s/sqrt($ssx);
$a2 = $alpha[1]/2;
$t2 = tdistr($df,$a2);


$ans1 = $b1-$t1*$s1;
$ans2 = $b1+$t1*$s1;
$ans3 = $b1-$t2*$s1;
$ans4 = $b1+$t2*$s1;


	
BEGIN_TEXT
Construct both a \($sperc[0]\)$PERCENT and a \($sperc[1]\)$PERCENT  confidence interval for
\(\beta_1\). $BR
\(\hat{\beta}_1 = $b1, \ s = $s, \ SS_{xx} = $ssx, \ n = $n \) $BR
\($sperc[0]\)$PERCENT : \{ans_rule(10)\} \(\leq \beta_1 \leq \) \{ans_rule(10)\} $BR
\($sperc[1]\)$PERCENT : \{ans_rule(10)\} \(\leq \beta_1 \leq \) \{ans_rule(10)\} $BR

END_TEXT
ANS(num_cmp($ans1, tol=>.05));
ANS(num_cmp($ans2, tol=>.05));
ANS(num_cmp($ans3, tol=>.05));
ANS(num_cmp($ans4, tol=>.05));


ENDDOCUMENT();       # This should be the last executable line in the problem.

