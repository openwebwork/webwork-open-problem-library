DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGnumericalmacros.pl",
  "PGstatisticsmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

for($i=0; $i<6; $i++) {
	$x[$i] = random(2,9,1);
	$y[$i] = random(1,9,1);
}

$sx =0;
$sy =0;
$sxy =0;
$sx2 =0;
$sy2 =0;

for($i=0; $i<6; $i++) {
	$sx = $sx + $x[$i];
	$sy = $sy + $y[$i];
	$sx2 = $sx2 + ($x[$i]**2);
	$sy2 = $sy2 + ($y[$i]**2);
	$sxy = $sxy + ($x[$i]*$y[$i]);
}

$ssx = $sx2-(($sx**2)/6);
$ssy = $sy2-(($sy**2)/6);
$ssxy = $sxy-(($sx*$sy)/6);

$b1 = $ssxy/$ssx;
$sse = $ssy - $b1*$ssxy;
$s = sqrt($sse/4);

$test = $b1/($s/sqrt($ssx));
$alpha = random(.01,.05,.04);
$t = tdistr(4,($alpha/2));


$mc = new_multiple_choice();

@ans = ("We can reject the null hypothesis that \( \beta_1 = 0\) and accept that \( \beta_1 \ne 0\). ",
        "There is not sufficient evidence to reject the null hypothesis that \( \beta_1 = 0\). ");

if ($test < -$t or $test > $t ) {$tag = 0;} else {$tag = 1;}

$mc -> qa('The final conclustion is', $ans[$tag]);

$mc -> extra($ans[1-$tag]);
	
BEGIN_TEXT
