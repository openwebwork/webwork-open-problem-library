$ans1 = "$a*abs(x)";
$ans2 = "$b*abs(x)";

ANS(fun_cmp($ans1, limits=>[-5,5], vars=>"x"));
ANS(fun_cmp($ans2, limits=>[-5,5], vars=>"x"));

