DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Complex');

# two eigenvalues are real and two are complex
# for simplicity, let's make either one of the real eigenvalues 0 or the two real are +- something. 

$choice = random(0,1,1);

if ($choice == 0) { 
	$real1 = 0; 
	$real2 = non_zero_random(-3,3,1);
} else { 
	$real1 = random(1,3,1);
	$real2 = - $real1;
}

$c = non_zero_random(1,2,1);
$d = random(2,5,1);
$e = random(-5,-3,1);

# complex eigenvalues are +- sqrt(-a^2-cd) i 

$B = Matrix([
[$c, $d, 0, 0],
[$e, -1*$c, 0, 0],
[0, 0, $real1, 0],
[0, 0, 0, $real2],
]);

# now create a nonsingular matrix with det +-1:


$a[1][1] = random(-1,1,2);
$a[1][2] = random(0,1,1);
$a[1][3] = random(0,1,1);
$a[1][4] = random(0,1,1);

$b[2][1] = 0;
$b[2][2] = random(-1,1,2);
$b[2][3] = random(0,1,1);
$b[2][4] = random(0,1,1);

$b[3][1] = 0;
$b[3][2] = 0;
$b[3][3] = random(-1,1,2); 
$b[3][4] = random(-1,1,1);

$b[4][1] = 0;
$b[4][2] = 0;
$b[4][3] = 0;
$b[4][4] = random(-1,1,2);

$k = random(-1,1,1);
$l = random(-1,1,1);
$m = random(-1,1,1);
$n = random(-1,1,1);
$p = random(-1,1,1);
$q = random(0,1,1);

foreach $i (1..4) { 
	$a[2][$i] = $b[2][$i] + $k*$a[1][$i];
	$a[3][$i] = $b[3][$i] + $l*$a[1][$i] + $m*$a[2][$i]; 
	$a[4][$i] = $b[4][$i] + $n*$a[1][$i] + $p*$a[2][$i] + $q*$a[3][$i];
}

$A = Matrix([
[ $a[1][1], $a[1][2], $a[1][3], $a[1][4] ],
[ $a[2][1], $a[2][2], $a[2][3], $a[2][4] ],
[ $a[3][1], $a[3][2], $a[3][3], $a[3][4] ],
[ $a[4][1], $a[4][2], $a[4][3], $a[4][4] ],
]);

$Ainv = $A->inverse;
        
$M = $A * $B * $Ainv;

Context()->texStrings;
BEGIN_TEXT
Find all the eigenvalues (real and complex) of the matrix 
\[ M = $M. \]
The eigenvalues are \{ans_rule(50)\}. 
(Enter your answers as a comma separated list.)
END_TEXT
Context()->normalStrings;

$ans1 = Complex("$real1");
$ans2 = Complex("$real2");
$ans3 = Complex("i * sqrt(- $c*$c - $d*$e)");
$ans4 = Complex("i*( -1)* sqrt(- $c*$c - $d*$e)");
$answer = List($ans1,$ans2,$ans3,$ans4);

ANS($answer->cmp);
COMMENT('MathObject version.  Two real eigenvalues and two purely imaginary eigenvalues.');
ENDDOCUMENT();