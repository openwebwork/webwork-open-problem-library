DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix')->variables->are('t'=>'Real');

$x1 = random(0,1,1);
$x2 = 1 - $x1;

$k = random(3,4,1);
$angle = arctan($k/(7-$k)) * random(-1,1,2) + $PI*random(0,1,1);

$r = random(5,15,5);

$a11 = $r*cos($angle);
$a12 = - $r*sin($angle);
$a21 = $r*sin($angle);
$a22 = $r*cos($angle);

$ans1 = Compute("$r**t*(cos($angle*t)*$x1 - sin($angle*t)*$x2)");
$ans2 = Compute("$r**t*(sin($angle*t)*$x1 + cos($angle*t)*$x2)");

$ans = Matrix([[$ans1],[$ans2]]);

$A = Matrix([[$a11, $a12], [$a21, $a22]]);

$xinit = Matrix([[$x1], [$x2]]);

Context()->texStrings;
BEGIN_TEXT
Find real-valued closed formulas for the trajectory \(x(t+1)=Ax(t)\), where 
\[A= $A \  \mbox{ and }  \ \vec{x}(0)=$xinit .\]
$BR
\(\vec{x}(t)=\) \{ $ans->ans_array(30) \} 
END_TEXT
Context()->normalStrings;

ANS( $ans->cmp );

;
ENDDOCUMENT();