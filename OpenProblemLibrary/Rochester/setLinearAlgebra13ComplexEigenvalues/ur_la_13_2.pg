DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Complex");
$real = non_zero_random(-3,3,1);
$c = non_zero_random(1,2,1);
$d = random(2,5,1);
$e = random(-5,-3,1);

# complex eigenvalues are +- sqrt(-c^2-de) i 

$B = Matrix([
[$c, $d, 0],
[$e, -1*$c, 0],
[0,0,$real],
]);

# now create a nonsingular matrix with det +-1:

$a[1][1] = random(-1,1,2);
$a[1][2] = random(-1,1,1);
$a[1][3] = random(-1,1,1);

$b[2][1] = 0;
$b[2][2] = random(-1,1,2);
$b[2][3] = random(-1,1,1);

$b[3][1] = 0;
$b[3][2] = 0;
$b[3][3] = random(-1,1,2); 

$k = random(-1,1,1);
$l = random(-1,1,1);
$m = random(-1,1,1);

foreach $i (1..3) { 
	$a[2][$i] = $b[2][$i] + $k*$a[1][$i];
	$a[3][$i] = $b[3][$i] + $l*$a[1][$i] + $m*$a[2][$i]; 
}


$A = Matrix([
[ $a[1][1], $a[1][2], $a[1][3] ],
[ $a[2][1], $a[2][2], $a[2][3] ],
[ $a[3][1], $a[3][2], $a[3][3] ],
]);
                
$Ainv = $A->inverse;


$M = $A * $B * $Ainv;

Context()->texStrings;
BEGIN_TEXT
Find all the eigenvalues (real and complex) of the matrix 
\[ M = $M. \]
The eigenvalues are \{ans_rule(50)\}. 
(Enter your answers as a comma separated list.)
END_TEXT
Context()->normalStrings;

ANS(List("$real, i*(sqrt(-($c)^2 - ($d*$e))),-(i)*(sqrt(-($c)^2 - ($d*$e)))")->cmp);
COMMENT('One real eigenvalue and two purely imaginary eigenvalues.');
ENDDOCUMENT();
