);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$n= random(3,15);

BEGIN_TEXT

Find the volume of the solid obtained by rotating the region
in the first quadrant bounded by the curves 
\(x=0\), \(y=1\), \(x=y^{$n}\),
about the line \(y=1\).

$BR $BR 
Volume: \{ans_rule( 30) \}
END_TEXT

Context('Numeric');

ANS(Compute("2* pi/(($n+1)*($n+2))")->cmp);

