DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
$showPartialCorrectAnswers = 1;

$a = random(2,7,1);
$a1 = $a+1;
$a1i = 1/$a1;

TEXT(beginproblem());

BEGIN_TEXT
Find the solution of the differential equation
\[\left(\ln(y)\right)^$a\frac{dy}{dx} = x^$a y\]
which satisfies the initial condition \(y(1)=e^2\).
$BR
\(y=\) \{ ans_rule(30)\}.
END_TEXT

ANS(fun_cmp("e^((x^$a1+2^$a1-1)^$a1i)", vars=>"x"));

ENDDOCUMENT();
