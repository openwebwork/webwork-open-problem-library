#DESCRIPTION
# Sequences
# Find a closed form for a sequence given the first 5 terms.
# Uses Arithmetic, Geometric, Squares, and Exponential
#
# For use in REGULAR ALGEBRA 2
# DIFFICULTY: LOW
#
#ENDDESCRIPTION

##Tagged by ynw2d

## DBsubject(Algebra)
## DBchapter(Finite sequences and series)
## DBsection(Notation)
## Date(6/3/2002)
## MLT(GenTerm)
## Level(2)
## TitleText1('College Algebra')
## AuthorText1('Stewart, Redlin, Watson')
## EditionText1('3')
## Section1('9.1')
## Problem1('19 20 17')
## KEYWORDS('Sequences')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a1 = non_zero_random(-100,100,1);
$d = non_zero_random(-20,20,1);

$a2 = non_zero_random(-100,100,1);
$r = non_zero_random(2,10,1);

$b = non_zero_random(-2,2,1);
$c = random(2,5,1);

foreach $i (1..5) {
  $array[1][$i] = $a1+$d*($i-1);
  $array[2][$i] = $a2*$r**($i-1);
  $array[3][$i] = $i**2;
  $array[4][$i] = $c**$i;
}

$list1 = "";
$list2 = "";
$list3 = "";
$list4 = "";

foreach $i (1..5) {
  $list1 = $list1.$array[1][$i].", ";
  $list2 = $list2.$array[2][$i].", ";
  $list3 = $list3.$array[3][$i].", ";
  $list4 = $list4.$array[4][$i].", ";
}

qa(~~@questions, ~~@answers,

"\($list1 \ldots, a_n = \)"     ,        "$a1+$d*(n-1)"        ,
"\($list2 \ldots, a_n = \)"     ,        "$a2*($r)**(n-1)"        ,
"\($list3 \ldots, a_n = \)"     ,        "(n)**2",
"\($list4 \ldots, a_n = \)"     ,        "$c**n"        );

# Now randomize the questions:
@slice = &NchooseK(4,3);
@shuffle = &shuffle(scalar(@slice));
($ans1, $ans2, $ans3) = @answers[@slice] ;

BEGIN_TEXT;
For each sequence, find a closed formula for the general term, \( a_n \).
$BR
$BR
1. $questions[$slice[0]] \{ans_rule(20)\}. $BR$BR
2. $questions[$slice[1]] \{ans_rule(20)\}. $BR$BR
3. $questions[$slice[2]] \{ans_rule(20)\}.

END_TEXT

## TEXT(EV2(match_questions_list(@questions[@slice])));
ANS(fun_cmp($ans1,var=>["n"],limits=>[[3,100]]));
ANS(fun_cmp($ans2,var=>["n"],limits=>[[3,100]]));
ANS(fun_cmp($ans3,var=>["n"],limits=>[[3,100]]));





ENDDOCUMENT();        # This should be the last executable line in the problem.


