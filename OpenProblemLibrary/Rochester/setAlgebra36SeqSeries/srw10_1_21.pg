TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,25,1);

BEGIN_TEXT
Use a graphing calculator to find the first 10 terms of the sequence 
\(  \displaystyle a_n = \frac{1}{a_{n-1}} \) and \( a_1=$a \)..
$BR
its 9th term is \{ans_rule(10) \};
$BR
its 10th term is \{ans_rule(10) \}.
$BR
END_TEXT

$ans1 = $a;
$ans2 = 1/$a;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

