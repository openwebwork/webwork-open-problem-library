DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a=random(2,9,1);
$d=random(2,9,1);
$n=random(10,20,1);

BEGIN_TEXT
Find the partial sum \(S_{$n}\) for the arithmetic sequence with
\(a=$a, d=$d\).
$BR
\(S_{$n}=\) \{ans_rule(15) \}.
$BR
END_TEXT

$ans1 = $n*(2*$a+($n-1)*$d)/2;

ANS(num_cmp($ans1));

