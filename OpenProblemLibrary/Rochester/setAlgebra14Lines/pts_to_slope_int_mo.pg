DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context('Numeric');

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###################
#
#  Setup

$x1 = random(-10,10,1);
$y1 = random(-10,10,1);
$x2 = random(-10,10,1);
$y2 = random(-10,10,1);
while ($x1==$x2) {$x2  = random(-10,10,1)}

$m1 = ($y2-$y1)/($x2-$x1);

$ans1 = Real($m1);
$ans2 = Real($y1 -$m1*$x1);

###################
#
#  Text

Context()->texStrings;
BEGIN_TEXT
The equation of the line that goes through the points
\( ( $x1 ,$y1 ) \) and \( ( $x2 ,$y2 ) \) can be written in the form
\( y = mx+b \) where \( m \) 
is: \{ans_rule(15) \}
$BR
and  where \( b \) is: \{ans_rule(15) \}
$BR
END_TEXT
Context()->normalStrings;

###################
#
#  Answers

ANS($ans1->cmp);
ANS($ans2->cmp);


