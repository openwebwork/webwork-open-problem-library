DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context('Numeric');

###################
#
#  Setup

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x1 = random(1,9,1);
$y1 = random(1,10,1);
$a1 = random(2,5,1);
$b1 = random(2,5,1);
$c1 = random(2,5,1);
$m1 = -$a1/$b1;


$ans1 = Real($m1);
$ans2 = Real($y1 -$m1*$x1);

###################
#
#  Text

Context()->texStrings;
BEGIN_TEXT
The equation of the line that goes through the point
\( ( $x1 ,$y1 ) \) and is parallel to the line
\( $a1 x + $b1 y = $c1 \)
can be written in the form
\( y = mx+b \) where \( m \)
 is: \{ans_rule(15) \}
$BR

and  where \( b \) is: \{ans_rule(15) \}
$BR
END_TEXT
Context()->normalStrings;

ANS($ans1->cmp);
ANS($ans2->cmp);


;

;
ENDDOCUMENT();
