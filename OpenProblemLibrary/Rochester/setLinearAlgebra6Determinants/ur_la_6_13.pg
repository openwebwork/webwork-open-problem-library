DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

$a11 = non_zero_random(-6,6,1);
$a22 = non_zero_random(-6,6,1);
$a33 = non_zero_random(-6,6,1);
$a44 = non_zero_random(-6,6,1);

$a21 = random(-9,9,1);
$a31 = non_zero_random(-9,9,1);
$a32 = random(-9,9,1);
$a41 = random(-9,9,1);
$a42 = non_zero_random(-9,9,1);
$a43 = random(-9,9,1);

$A = Matrix([[$a11,    0,    0,    0], 
				   [$a21, $a22,    0,    0], 
				   [$a31, $a32, $a33,    0], 
				   [$a41, $a42, $a43, $a44]]);

$det = Compute("$a11 * $a22 * $a33 * $a44");

Context()->texStrings;
BEGIN_TEXT

Find the determinant of the matrix 
\[A = $A. \]
$BR
\(\det(A)=\) \{ans_rule(15)\}.
END_TEXT
Context()->normalStrings;

ANS($det->cmp);
;

