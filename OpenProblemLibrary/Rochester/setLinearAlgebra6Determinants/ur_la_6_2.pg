DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

do { 

$A = Matrix([
[random(-4,4,1),random(5,9,1)],
[random(-9,-4,1),random(-4,4,1)],
]);

$Adet = $A->det();

} until ( $Adet != 0 );

$Ainv = $A->inverse();
$Ainvdet = Compute("1/$Adet");

$popup = PopUp(["Choose","Zero","Nonzero"],"Nonzero");

Context()->texStrings;
BEGIN_TEXT
If \(A = $A\), then 
\(\det(A)=\) \{ $Adet->ans_rule(10) \} is \{ $popup->menu() \}.
$BR
$BR
Thus, \( A^{-1} = \) \{ $Ainv->ans_array() \} and 
\(\det(A^{-1})=\) \{ $Ainvdet->ans_rule(10) \}.
END_TEXT
Context()->normalStrings;

ANS( $Adet->cmp );
ANS( $popup->cmp );
ANS( $Ainv->cmp );
ANS( $Ainvdet->cmp );

;
ENDDOCUMENT();
