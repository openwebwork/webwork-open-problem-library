DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

$a11 = random(-5,5,2);
$a12 = non_zero_random(-6,6,1);
$a21 = random(-6,6,2);
if (abs($a12) == abs($a21)) { $a21 = 8; }
$a22 = random(-5,5,2);
if (abs($a11) == abs($a22)) { $a22 = 7; } 

$A = Matrix([[$a11, $a12], [$a21, $a22]]);

$Adet = $A->det;

$Acof = Matrix([
[$a22,-1*$a21],
[-1*$a12,$a11],
]);

$Aadj = Matrix([
[$a22,-1*$a12],
[-1*$a21,$a11],
]);

$Ainv = $A->inverse;

Context()->texStrings;
BEGIN_TEXT

Let \(A=$A\).
$BR
$BR
(a) Find the determinant of \( A \).
$BR
\( {\rm det} (A) = \) \{ans_rule(10)\},  
$BR
$BR
(b) Find the matrix of cofactors of \( A \).
$BR
\(C=\) \{ $Acof->ans_array() \}
$BR
$BR
(c) Find the adjoint of \( A \).
$BR
\({\rm adj}(A)=\) \{ $Aadj->ans_array \}
$BR
$BR
(d) Find the inverse of \( A \).
$BR
\(A^{-1}=\) \{ $Ainv->ans_array() \}

END_TEXT
Context()->normalStrings;

ANS( $Adet->cmp );
ANS( $Acof->cmp );
ANS( $Aadj->cmp );
ANS( $Ainv->cmp );

;
ENDDOCUMENT();       # This should be the last executable line in the problem.
