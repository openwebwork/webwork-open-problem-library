DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a11 = random(-9,9,1);
$a12 = non_zero_random(-9,9,1);
$a13 = non_zero_random(-9,9,1);
$a21 = random(-9,9,1);
$a22 = random(-9,9,1);
$a23 = non_zero_random(-9,9,1);
$a31 = non_zero_random(-9,9,1);
$a32 = random(-9,9,1);
$a33 = random(-9,9,1);

$A = Matrix([
[$a11,$a12,$a13],
[$a21,$a22,$a23],
[$a31,$a32,$a33],
]);

$m11 = $a22*$a33 - $a23*$a32;
$m12 = $a21*$a33 - $a23*$a31;
$m13 = $a21*$a32 - $a22*$a31;
$m21 = $a12*$a33 - $a13*$a32;
$m22 = $a11*$a33 - $a13*$a31;
$m23 = $a11*$a32 - $a12*$a31;
$m31 = $a12*$a23 - $a22*$a13;
$m32 = $a11*$a23 - $a13*$a21;
$m33 = $a11*$a22 - $a12*$a21;


$M = Matrix([
[$m11,$m12,$m13],
[$m21,$m22,$m23],
[$m31,$m32,$m33],
]);

$C = Matrix([
[$m11,-1*$m12,$m13],
[-1*$m21,$m22,-1*$m23],
[$m31,-1*$m32,$m33],
]);


Context()->texStrings;
BEGIN_TEXT

Determine all minors and cofactors of 
\[ A= $A. \]
$BR
$BR
\(M=\) \{$M->ans_array()\}
$BR
$BR
\(C=\) \{$C->ans_array()\}

END_TEXT
Context()->normalStrings;

ANS( $M->cmp );
ANS( $C->cmp );

;
ENDDOCUMENT();       # This should be the last executable line in the problem.

