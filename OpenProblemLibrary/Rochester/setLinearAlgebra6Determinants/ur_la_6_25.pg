DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');


$a11 = random(-2,2,2);
$a12 = random(-2,2,2);
$a13 = random(-3,3,2);
$a21 = random(-3,3,1);
$a22 = random(-3,3,2);
$a23 = random(-3,3,1);
$a31 = random(-3,3,2);
$a32 = random(-2,2,2);
$a33 = random(-3,3,1);

$A = Matrix([[$a11, $a12,$a13], [$a21, $a22,$a23], [$a31, $a32,$a33]]);

$Adet = $A->det;

$m11 = $a22*$a33 - $a23*$a32;
$m12 = $a21*$a33 - $a23*$a31;
$m13 = $a21*$a32 - $a22*$a31;
$m21 = $a12*$a33 - $a13*$a32;
$m22 = $a11*$a33 - $a13*$a31;
$m23 = $a11*$a32 - $a12*$a31;
$m31 = $a12*$a23 - $a22*$a13;
$m32 = $a11*$a23 - $a13*$a21;
$m33 = $a11*$a22 - $a12*$a21;


$Acof = Matrix([
[$m11,-1*$m12,$m13],
[-1*$m21,$m22,-1*$m23],
[$m31,-1*$m32,$m33],
]);

$Aadj = Matrix([
[$m11,-1*$m21,$m31],
[-1*$m12,$m22,-1*$m32],
[$m13,-1*$m23,$m33],
]);

$Ainv = $A->inverse;

Context()->texStrings;
BEGIN_TEXT

Let \(A=$A\).
$BR
$BR
(a) Find the determinant of \( A \).
$BR
\( {\rm det} (A) = \) \{ans_rule(10)\},  
$BR
$BR
(b) Find the matrix of cofactors of \( A \).
$BR
\(C=\) \{ $Acof->ans_array() \}
$BR
$BR
(c) Find the adjoint of \( A \).
$BR
\({\rm adj}(A)=\) \{ $Aadj->ans_array \}
$BR
$BR
(d) Find the inverse of \( A \).
$BR
\(A^{-1}=\) \{ $Ainv->ans_array() \}

END_TEXT
Context()->normalStrings;

ANS( $Adet->cmp );
ANS( $Acof->cmp );
ANS( $Aadj->cmp );
ANS( $Ainv->cmp );

;
ENDDOCUMENT(); 
