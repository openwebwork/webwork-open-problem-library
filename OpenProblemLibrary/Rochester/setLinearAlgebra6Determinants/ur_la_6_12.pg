DOCUMENT() ;        

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserVectorUtils.pl",
"PGchoicemacros.pl",
"PGcourse.pl"
) ;

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

@slice = NchooseK(3,3);

if (($slice[0]==0) and ($slice[1]==1) and ($slice[2]==2)) {
	$slice[0]=1;
	$slice[1]=2;
	$slice[2]=0;
}

$ans = 1;
if (($slice[0]+2*$slice[1]+3*$slice[2] == 4) or ($slice[0]+2*$slice[1]+3*$slice[2] == 7)) { 
	$ans = -1;
}

foreach $i (0..2) { 
	foreach $j (0..2) { 
		$a[$i][$j] = 0;
	}
	$a[$i][$slice[$i]] = 1;
}

$P = Matrix([[$a[0][0], $a[0][1], $a[0][2]], 
				   [$a[1][0], $a[1][1], $a[1][2]], 
				   [$a[2][0], $a[2][1], $a[2][2]]]);

Context()->texStrings;
BEGIN_TEXT

A square matrix is called a permutation matrix if each row and each column contains exactly one entry 1, with all other
entries being 0. An example is  
\[ P = $P. \]
Find the determinant of this matrix. 
$BR
\(\det(P)=\) \{ans_rule(5)\}.
END_TEXT
Context()->normalStrings;

ANS(Compute("$ans")->cmp);

COMMENT('MathObject version');

