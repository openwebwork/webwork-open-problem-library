DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a11 = random(-9,9,1);
$a12 = non_zero_random(-9,9,1);
$a21 = random(-9,9,1);
$a22 = non_zero_random(-9,9,1);

$A = Matrix([
[$a11,$a12],
[$a21,$a22],
]);

$M = Matrix([
[$a22,$a21],
[$a12,$a11],
]);

$C = Matrix([
[$a22,-1*$a21],
[-1*$a12,$a11],
]);

Context()->texStrings;
BEGIN_TEXT

Determine all minors and cofactors of 
\[ A= $A.\]
$BR
$BR
\( M=\) \{$M->ans_array() \}
$BR
$BR
\( C=\) \{$C->ans_array() \}

END_TEXT
Context()->normalStrings;

ANS( $M->cmp );
ANS( $C->cmp );

;

