DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$denom=0;
until ($denom>0) {
	$a = random(-2,4,.1);
	$b = random(1,6,1);
	$c = random(1,8,1);
	$x1=random(1,4,.5);
	$denom = sqrt($b+$c*$x1);
	}
$y1=$a/$denom;
$yp = -($a/2)*$c/( $denom**3 );
$y0 = -$yp*$x1 +$y1;

TEXT(EV2(<<EOT));
Find the \(y\)-intercept of the tangent line to
\[ y = \frac{$a}{ \sqrt{$b + $c x } } \]
at \( (  $x1 , $y1 )   \) .
$BR
\{ ans_rule(30) \}
EOT

ANS(num_cmp($y0));

ENDDOCUMENT();        # This should be the last executable line in the problem.
