TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(10,20,1);
$b = random(2,8,1);
$x = -$a+$b*$b;

BEGIN_TEXT
$BR
Let \(f(x) = \displaystyle{
               \sqrt{$a+x}   } \)
$BR
Then \( f'($x)= \)\{ans_rule(30)\}.
$BR
And after simplifying \( f'(x)= \)\{ans_rule(30)\}.
$BR
END_TEXT 

$ans1=1/(2*$b);
$ans2="1/(2*($a+x)**(1/2))";

ANS(num_cmp($ans1));
ANS(fun_cmp($ans2));
