DOCUMENT() ;        

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserVectorUtils.pl",
"PGcourse.pl"
) ;

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

foreach $i (1..6) { 
	$a[$i] = non_zero_random(-6,6,1);
} 

$tag = random(1,6,1);
$a[$tag] = 0;

$a[7] = random(2,7,1);

$x = Matrix([[$a[1]], [$a[2]], [$a[3]]]);
$y = Matrix([[$a[4]], [$a[5]], [$a[6]]]);

$v = $a[7] * $x;
$u = $x + $y;
$w = $a[7] * $x + $y;

Context()->texStrings;
BEGIN_TEXT
Let \(\vec{x}= $x\) and \(y= $y\). 
Find the vectors \(\vec{v}=$a[7] \vec{x}\), \(\vec{u}= \vec{x} + \vec{y}\), and \(\vec{w}=$a[7] \vec{x} + \vec{y}\). 
$BR
$BR
\(\vec{v} = \) \{ $v->ans_array \}   
$BR
\(\vec{u} = \) \{ $v->ans_array \}   
$BR
\(\vec{w} = \) \{ $v->ans_array \}   

END_TEXT
Context()->normalStrings;

ANS( $v->cmp );
ANS( $u->cmp );
ANS( $w->cmp );

COMMENT('MathObject version');
