DOCUMENT();

loadMacros(
	'PGstandard.pl',
	'MathObjects.pl',
	'contextFraction.pl',
	'PGcourse.pl'
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

$a1 = random(6, 12);
$x1 = random(2, $a1 - 1);
$x2 = $x1*$x1;
$y1 = ($a1 - $x1)**2;

Context('Fraction');
$deriv = Fraction($x1 - $a1, $x1)->reduce;


##############################################################
#
#  Text
#
#
Context()->texStrings;
BEGIN_TEXT

If \(  \sqrt{x} + \sqrt{y} = $a1 \) and
\( y($x2) = $y1 \), find
\( y'($x2) \) by implicit differentiation.
$BR $BR
 \( y'($x2) = \)  \{ans_rule(10) \}
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS($deriv->cmp);

;

ENDDOCUMENT();
