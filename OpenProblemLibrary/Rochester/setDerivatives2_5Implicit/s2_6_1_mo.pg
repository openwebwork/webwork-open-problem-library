DOCUMENT();

loadMacros(
	'PGstandard.pl',
	'MathObjects.pl',
	'contextFraction.pl',
	'PGcourse.pl'
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

$a1 = random(2,5,1);
$b1 = random(2,5,1);
$c1 = random(1,4,5);
$x1 = Real(random(1,5,1));
$c2 = $c1*$x1;
$y1 = $c1 - $a1*$x1 - $b1;

Context('Fraction');
$deriv = Fraction(
	-(2*$a1*$x1 + $b1 + $y1),
	$x1
);

##############################################################
#
#  Text
#
#

BEGIN_TEXT
If \( $a1 x^2 + $b1 x + xy = $c2  \) and \( y($x1) = $y1 \),
find \( y'($x1) \) by implicit differentiation.
$BR $BR
\( y'($x1) = \) \{ ans_rule(5) \}
$BR
END_TEXT

##############################################################
#
#  Answers
#
#

ANS($deriv->cmp);

;

ENDDOCUMENT();
