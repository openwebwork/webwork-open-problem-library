DOCUMENT();


loadMacros(
	'PGstandard.pl',
	'MathObjects.pl',
	'contextFraction.pl',
	'PGcourse.pl'
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
do {
	$a1 = random(4, 8);
	$b1 = random(4, 8);
} until (
	$a1 != $b1
);
$a2 = $a1*$a1;
$b2 = $b1*$b1;
$x1 = random(2, $a1 - 1);
$x2 = $x1*$x1;

foreach $i ( 1 .. int(sqrt($a2 - $x2)) ) {
	$d = $i if ( ($a2 - $x2) % $i**2 == 0 )
}

Context('Fraction');
($c, $r) = (
	Fraction($b1 * $d, $a1)->reduce,
	($a2 - $x2) / $d**2
);
$y1_string = ( $r == 1
	? $c
	: ( $c == 1
		? "sqrt($r)"
		: "$c sqrt($r)"
	)
);

$e = Fraction($b2*$x1, $a2*$c*$r)->reduce;
$deriv_string = ( $r == 1
	? $e
	: ( $e == 1
		? "sqrt($r)"
		: "$e sqrt($r)"
	)
);

Context('Numeric')->flags->set(
	reduceConstants => 0,
	reduceConstantFunctions => 0
);
$y1 = Formula("$y1_string");

$deriv = Compute('-' . $deriv_string);


##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
If
\[ \frac{x^2}{$a2} + \frac{y^2}{$b2} = 1 \]
and \( y($x1) = $y1 \), find
\( y'( $x1 ) \) by implicit differentiation.
$BR $BR
\( y'($x1)  = \) \{ans_rule(30) \}
$PAR
END_TEXT

Context()->normalStrings;
##############################################################
#
#  Answers
#
#


ANS($deriv->cmp);

;

ENDDOCUMENT();
