DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
########################################
# Setup

Context("Numeric");
$showPartialCorrectAnswers = 1;

$a = random(1,7,1);
$m = random(1,3,1);
$b = $a+$m;

$c = random(1,5,1);
$n = random(1,4);
$d = $c + $n;

$min = Compute("$a * ($d - $c)");
$max = Compute("$b * ($d - $c)");


########################################
# Main Text

Context()->texStrings;
BEGIN_TEXT

Given that \( $a \le f(x) \le $b \) for \( $c \le x \le $d \), 
estimate the value of \( \displaystyle \int_{$c}^{$d} f(x) dx \)
$BR
\{ans_rule(30)\} \( \displaystyle \le \int_{$c}^{$d} f(x) dx \le \) \{ans_rule(30)\}

END_TEXT
Context()->normalStrings;

########################################
# Answers

ANS($min->cmp);
ANS($max->cmp);

########################################


;

ENDDOCUMENT();
