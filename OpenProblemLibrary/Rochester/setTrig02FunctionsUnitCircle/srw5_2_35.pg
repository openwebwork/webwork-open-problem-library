DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,15,1);
$b = $a/20;

BEGIN_TEXT
Use a calculator to find the following values:
$BR
\(\sin ($b) =\) \{ans_rule(15) \};
$BR
\(\cos ($b) =\) \{ans_rule(15) \};
$BR
\(\tan ($b) =\) \{ans_rule(15) \}.
$BR
END_TEXT

$ans1=sin($b);
$ans2=cos($b);
$ans3=tan($b);

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));

ENDDOCUMENT();        # This should be the last executable line in the problem.
