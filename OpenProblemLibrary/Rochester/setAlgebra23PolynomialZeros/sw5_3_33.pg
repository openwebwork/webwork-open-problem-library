DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(1,8,1);
# (x^2+2x-1)(x-a)
$b1=2-$a;
$c1=-2*$a-1;
$d1=$a;

$p="P(x)=x^3 ";

if (abs($b1) > 1) { $p=$p."? {$b1} x^2 "; };
if ($b1==1) { $p=$p."+ x^2 "; };
if ($b1==-1) { $p=$p."- x^2 "; };

if (abs($c1) > 1) { $p=$p."? {$c1} x "; };
if ($c1==1) { $p=$p."+ x "; };
if ($c1==-1) { $p=$p."- x "; };

if ($d1 != 0) { $p=$p."? {$d1}"; };

#\[P(x)=x^3 ? {$b1} x^2 ? {$c1} x ? {$d1} \]

TEXT(EV2(<<EOT));
Find all the real zeros of the polynomial 
\[ $p. \]
$BR  
Its real zeros are
\(x_1=\) \{ ans_rule(10) \},
\(x_2=\) \{ ans_rule(10) \} and
\(x_3=\) \{ ans_rule(10) \} with \(x_1\le x_2\le x_3\).
$BR  
$BBOLD Note: $EBOLD
If the polynomial has only two real zeros, input them at
\(x_1\) and \(x_2\); 
if the polynomial has only one real zero, input it at
\(x_1\). 
$BR  
EOT

$ans1 = -1-sqrt(2);
$ans2 = -1+sqrt(2);
$ans3 = $a;
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));

ENDDOCUMENT();        # This should be the last executable line in the problem.

