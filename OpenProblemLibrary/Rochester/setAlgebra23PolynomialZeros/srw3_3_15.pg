DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-5,-1,1);
$b = non_zero_random(1,6,1);
# (x-a)(x-b)(x^2+1)
$b1=-($a+$b);
$c1=$a*$b+1;
$d1=-($a+$b);
$e1=$a*$b;

$p="P(x)=x^4 ";

if (abs($b1) > 1)
 {
 $p=$p."? {$b1} x^3 ";
 };
if ($b1==1)
 {
 $p=$p."+ x^3 ";
 };
if ($b1==-1)
 {
 $p=$p."- x^3 ";
 };

if (abs($c1) > 1)
 {
 $p=$p."? {$c1} x^2 ";
 };
if ($c1==1)
 {
 $p=$p."+ x^2 ";
 };
if ($c1==-1)
 {
 $p=$p."- x^2 ";
 };

if (abs($d1) > 1)
 {
 $p=$p."? {$d1} x ";
 };
if ($d1==1)
 {
 $p=$p."+ x ";
 };
if ($d1==-1)
 {
 $p=$p."- x ";
 };

if ($e1 != 0)
 {
 $p=$p."? {$e1}";
 };

#\(P(x)=x^4 ? {$b1} x^3 ? {$c1} x^2 ? {$d1} x ? {$e1}\).

TEXT(EV2(<<EOT));
Find all rational zeros of the polynomial 
\[ $p. \]
$BR  
Its rational zeros are
\(x_1=\) \{ ans_rule(10) \},
\(x_2=\) \{ ans_rule(10) \},
\(x_3=\) \{ ans_rule(10) \} and
\(x_4=\) \{ ans_rule(10) \} with \(x_1\le x_2\le x_3\le x_4\).
$BR  
$BBOLD Note: $EBOLD
If the polynomial has only three rational zeros, input them at
\(x_1\), \(x_2\) and \(x_3\); 
If the polynomial has only two rational zeros, input them at
\(x_1\) and \(x_2\); 
if the polynomial has only one rational zero, input it at
\(x_1\). 
$BR  
EOT

$ans1 = $a;
$ans2 = $b;
$ans3 = "";
$ans4 = "";
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(str_cmp($ans3));
ANS(str_cmp($ans4));

ENDDOCUMENT();        # This should be the last executable line in the problem.


