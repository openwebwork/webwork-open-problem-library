TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$k = random(2,5,1);
$l = random(2,5,1);
$n = $k + $l;

if ($k == $l) { $good = 1; } else { $good = 2;}

if ($n < 8) { $poss = $n - 1; } else { $poss = 13 - $n; }

$ans = $good/$poss;

BEGIN_TEXT

What is the probability that at least one of a pair of fair dice lands of $k, given that the sum of the dice is $n?

\{ans_rule(10)\}

END_TEXT

ANS(num_cmp($ans));

