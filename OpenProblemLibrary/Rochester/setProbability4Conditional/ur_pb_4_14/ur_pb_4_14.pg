$showPartialCorrectAnswers = 1;

@list = (.1, .2, .3, .4, .5, .6, .7, .8, .9);
@slice = NchooseK(9,5);
@slist = @list[@slice];

$p1 = $slist[0];
$p2 = $slist[1];
$p3 = $slist[2];
$p4 = $slist[3];
$p5 = $slist[4];

$ans1 = $p5 * ($p1*$p2 + $p3*$p4 - $p1*$p2*$p3*$p4);
$ans2 = (1 - $p3) * ($p1*$p4 + $p2*$p5 - $p1*$p4*$p2*$p5) + $p3 * ($p1 + $p2 - $p1*$p2) * ($p4 + $p5 - $p4*$p5);

BEGIN_TEXT

