DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(2,4,1);
$b = random(2,4,1);
$sa = random(-1,1,2);
$sb = random(-1,1,2);
$a = $a * $sa;
$b = $b * $sb;

$v2 = random(2,4,1);
$v3 = random(-2,-4,1);
$v1 = - $a*$v2 - $b*$v3;

$v = Matrix([
[-1*$a,1],
[0,-1*$b],
[0,1],
]);

$C = Matrix([
[non_zero_random(-2,2,1),non_zero_random(-2,2,1),non_zero_random(-2,2,1)],
[non_zero_random(-2,2,1),non_zero_random(-2,2,1),non_zero_random(-2,2,1)],
]);

$M = $v * $C;

$N = $M * $v;

$ans1 = $N->element(2,1);
$ans2 = $N->element(2,2);
$ans3 = $N->element(3,1);
$ans4 = $N->element(3,2);

$ans = Matrix([
[$ans1,$ans2],
[$ans3,$ans4],
]);

$basis1 = Matrix([[-1*$a], [1], [0]]);
$basis2 = Matrix([[-1*$b], [0], [1]]);

Context()->texStrings;
BEGIN_TEXT
Let \(V\) be the plane with equation \(x_1 + $a x_2 + $b x_3 =0 \) in \({\mathbb R}^3\).
Find the matrix \(A\) of the linear transformation
\( T(\vec{x})= $M \vec{x} \) with respect to the basis
\( \left\lbrace $basis1, $basis2 \right\rbrace. \)
$BR
$BR
\(A=\) \{ $ans->ans_array \}
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
COMMENT('MathObject version');
ENDDOCUMENT();