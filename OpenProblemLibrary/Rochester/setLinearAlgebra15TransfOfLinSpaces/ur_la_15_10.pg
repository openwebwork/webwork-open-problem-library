DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(-9,-1,1);
$b = random(2,9,1);

$ans1 = $b - $a;
$ans2 = ($b**2 - $a**2)/2;
$ans3 = ($b**3 - $a**3)/3;
$ans4 = ($b**4 - $a**4)/4;

$ans = Matrix([$ans1,$ans2,$ans3,$ans4]);

Context()->texStrings;
BEGIN_TEXT
Find the matrix \(A\) of the linear transformation \[T(f(t)) = \int_{$a}^{$b} f(t) dt\] from \(P_3\) to
\({\mathbb R}\) with respect to the standard bases for \(P_3\) and \({\mathbb R}\). 
$BR
$BR
\(A=\) \{ $ans->ans_array(20) \} 
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
;
ENDDOCUMENT();
