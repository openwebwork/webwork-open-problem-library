);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

@c = NchooseK(9,9);
foreach $i (0..8) { 
	$c[$i] = $c[$i]+1;
}

$a21 = - $c[1]/$c[2];
$a22 = $c[0]/$c[2];
$a23 = $c[1]/$c[2];

$RIGHT_BRACE = '\}';

$A = Matrix([
[1,0,0],
[$a21,$a22,$a23],
[0,0,1],
]);

$T = Matrix([[$c[0], $c[1]], [0, $c[2]]]);

$U1 = Matrix([[1,0],[0,0]]);
$U2 = Matrix([[0,1],[0,0]]);
$U3 = Matrix([[0,0],[0,1]]);

Context()->texStrings;
BEGIN_TEXT
Find the matrix \(A\) of the linear transformation
\[ T(M)=  $T M {$T}^{-1} \]
from \(U^{2\times 2}\) to \(U^{2\times 2}\) (upper triangular matrices) with respect to the standard basis for \(U^{2\times 2}\) given by
\[ \left\lbrace $U1, $U2, $U3 \right\rbrace. \]
$BR
\(A=\) \{ $A->ans_array \}
END_TEXT
Context()->normalStrings;

ANS($A->cmp);
;
