DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

###################
#
#  Setup

Context("Interval");

$a = random(-10,10,1);
$b = $a+2*random(1,10,1);
$union = Union( Interval( "(-infinity,$a]" ) , Interval( "[$b,infinity)" ) );

$ans1 = ($a+$b)/2;
$ans2 = ($b-$a)/2;

###################
#
#  Text

Context()->texStrings;

BEGIN_TEXT
Let S be \($union\). $BR
Then S can also be described in set notation by the inequality \(|x-a|\geq b\)$BR
$BR
for $BR
\(a=\) \{ans_rule(20) \}
$BR
and$BR
\(b=\) \{ans_rule(20) \}
$BR
END_TEXT

Context()->normalStrings;

###################
#
#  Answers

ANS(num_cmp( $ans1 ));
ANS(num_cmp( $ans2 ));


;

;
