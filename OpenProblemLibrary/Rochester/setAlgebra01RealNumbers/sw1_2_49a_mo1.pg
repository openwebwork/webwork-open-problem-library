DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

###################
#
#  Setup

Context("LimitedNumeric");

$a = Real( random(25,49,1) );
$b = Real( random(2,24,1) );
$answer = $a-$b;

###################
#
#  Text

BEGIN_TEXT
Evaluate the following expression: $BR $BR
\(\left| |-$a|-|-$b| \right| \) $BR
$BR = \{ ans_rule(5) \}
$BR
END_TEXT

###################
#
#  Answers

ANS($answer->cmp );


;
ENDDOCUMENT();
