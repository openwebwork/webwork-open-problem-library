         '\[a N_2H_4 + b N_2O_4 \rightarrow c N_2+d H_2O,\]', 
         '\[a CH_4 + b O_2 \rightarrow c CO_2 + d H_2O,\]',  
	 '\[a C_2H_6 + b CO_2 + c H_2O \rightarrow d C_2H_5OH,\]');

@eq = ('\[2a+b=2c+3d.\]', '\[10a=8d.\]', '\[2b=c+d.\]',
       '\[b=3c.\]', '\[4b=d.\]', '\[2b=2c+d.\]', '\[2b+c=d.\]');

