DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');
Context()->flags->set(
  tolerance => 0.001,
  tolType => "absolute",
);

# create orthogonal vectors

@s = NchooseK(3,3);

$signx = random(-1,1,2);
$signy = random(-1,1,2);
$signz = random(-1,1,2);

$x[$s[0]] = 2 * $signx;
$x[$s[1]] = 2 * $signx;
$x[$s[2]] = 1 * $signx;

$y[$s[0]] = -2 * $signy;
$y[$s[1]] = 1 * $signy;
$y[$s[2]] = 2 * $signy;

$z[$s[0]] = 1 * $signz;
$z[$s[1]] = -2 * $signz;
$z[$s[2]] = 2 * $signz;

#change the vectors so that they are no longer orthogonal but the Gram-Schmidt process gives the original x,y,z.

$k = non_zero_random(-2,2,1);
$m = random(-2,2,1);
$n = non_zero_random(-2,2,1);
$p = random(2,4,1);

$norm_x = 0;
$norm_y = 0;
$norm_z = 0;

foreach $i (0..2) {
        $norm_x = $norm_x + $x[$i] * $x[$i];
        $norm_y = $norm_y + $y[$i] * $y[$i];
        $norm_z = $norm_z + $z[$i] * $z[$i];
	$cz[$i] = $z[$i] + $m*$x[$i] + $n*$y[$i];
 	$cy[$i] = $y[$i] + $k*$x[$i];
	$cx[$i] = $p*$x[$i];
}

$norm_x = sqrt($norm_x);
$norm_y = sqrt($norm_y);
$norm_z = sqrt($norm_z);

$X = Matrix([[$cx[0]], [$cx[1]], [$cx[2]]]);
$Y = Matrix([[$cy[0]], [$cy[1]], [$cy[2]]]);
$Z = Matrix([[$cz[0]], [$cz[1]], [$cz[2]]]);

$ans1 = (1/$norm_x) * Matrix([ [$x[0]], [$x[1]], [$x[2]] ]);
$ans2 = (1/$norm_y) * Matrix([ [$y[0]], [$y[1]], [$y[2]] ]);
$ans3 = (1/$norm_z) * Matrix([ [$z[0]], [$z[1]], [$z[2]] ]);


Context()->texStrings;
BEGIN_TEXT
Use the Gram-Schmidt process to transform the following sequence of vectors into an orthonormal sequence of vectors. 
\[ \vec{x} = $X, \ \vec{y} = $Y, \ \vec{z} = $Z. \]
$BR
$BCENTER
\(\Bigg\lbrace\) 
\{ $ans1->ans_array(15) \}, 
\{ $ans2->ans_array(15) \}, 
\{ $ans3->ans_array(15) \} 
\(\Bigg\rbrace.\)
$ECENTER
END_TEXT
Context()->normalStrings;

ANS($ans1->cmp);
ANS($ans2->cmp);
ANS($ans3->cmp);

COMMENT('Gram-Schmidt must be performed on the vectors in the order given.');
ENDDOCUMENT();       # This should be the last executable line in the problem.
