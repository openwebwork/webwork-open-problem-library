DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');
Context()->flags->set(
  tolerance => 0.001,
  tolType => "absolute",
);

$a = non_zero_random(-4,4,1);
$b = non_zero_random(-4,4,1);
$c = non_zero_random(-4,4,1);

# create orthogonal vectors

$x[1] = $a;
$x[2] = $b;
$x[3] = $c;

$y[1] = $b;
$y[2] = -$a;
$y[3] = 0;

#change the vectors so that they are no longer orthogonal but the Gram-Schmidt process gives the original x,y.

$k = non_zero_random(-2,2,0.5);

$norm_x = 0;
$norm_y = 0;

foreach $i (1..3) {
 	$cy[$i] = $y[$i] + $k*$x[$i];
        $norm_x = $norm_x + $x[$i] * $x[$i];
        $norm_y = $norm_y + $y[$i] * $y[$i];
}

$norm_x = sqrt($norm_x);
$norm_y = sqrt($norm_y);

$X = Matrix([[$x[1]], [$x[2]], [$x[3]]]);
$Y = Matrix([[$cy[1]], [$cy[2]], [$cy[3]]]);

$basis1 = (1/$norm_x) * Matrix([ [$x[1]], [$x[2]], [$x[3]] ]);
$basis2 = (1/$norm_y) * Matrix([ [$y[1]], [$y[2]], [$y[3]] ]);

Context()->texStrings;
BEGIN_TEXT
Let
\[ \vec{x} = $X \ \mbox{ and } \ \vec{y} = $Y. \]
Use the Gram-Schmidt process to determine an orthonormal basis for the subspace of \({\mathbb R}^3\) 
spanned by \(\vec{x}\) and \(\vec{y}\).
$BR
$BR
$BCENTER
\(\Bigg\lbrace\) 
\{ $basis1->ans_array(15) \}, 
\{ $basis2->ans_array(15) \}
\(\Bigg\rbrace.\) 
$ECENTER
END_TEXT
Context()->normalStrings;

ANS($basis1->cmp);
ANS($basis2->cmp);
COMMENT('MathObject version.  Gram-Schmidt must be performed on the vectors in the order given.');
ENDDOCUMENT();       # This should be the last executable line in the problem.
