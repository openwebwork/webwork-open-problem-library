DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');
Context()->flags->set(
  tolerance => 0.001,
  tolType => "absolute",
);

$u = non_zero_random(-3,3,1);
$v = non_zero_random(-3,3,1);

$k = 1;
$l = 0;
$m = non_zero_random(-3,3,1);
$n = non_zero_random(-3,3,1);

$a = $k*$v - $l;
$b = $k + $l*$v;
$c = $k*$u;

$d = $m*$v - $n;
$e = $m + $n*$v;
$f = $m*$u;

###################################

$A = Matrix([[$a, $b, $c], [$d, $e, $f]]);

$norm1 = sqrt($u * $u + $v * $v + 1);
$norm2 = sqrt(1 + $v * $v);

$basis1 = Matrix([$v/$norm1, 1/$norm1, $u/$norm1]);
$basis2 = Matrix([1/$norm2, - $v/$norm2, 0]);

###################################

$multians = MultiAnswer($basis1, $basis2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&orthonormal_basis_checker_rows,
);


Context()->texStrings;
BEGIN_TEXT
Let \[ A = $A. \]
Find an orthonormal basis of the row space of \(A\).
$BR
$BR
$BCENTER
\(\big\lbrace\) 
\{ $multians->ans_array(10) \}, 
\{ $multians->ans_array(10) \} 
\(\big\rbrace.\)
$ECENTER
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;
ENDDOCUMENT();
