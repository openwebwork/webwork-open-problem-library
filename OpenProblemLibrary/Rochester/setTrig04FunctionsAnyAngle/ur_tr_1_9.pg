DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,4,1);
$b = random($a+1,8,1);
$q = random(2,4,1);
$pi = 3.1416;

if ($q == 2) {
$s = -1;
$theta = $pi - arctan($b/$a);
$inequality = '>';
}
if ($q == 3) {
$s = 1;
$theta = $pi + arctan($b/$a);
$inequality = '<';
}
if ($q == 4) {
$s = -1;
$theta = 2*$pi - arctan($b/$a);
$inequality = '<';
}
if ($s == 1) {$sign = ' '}
if ($s == -1) {$sign = '-'}

TEXT(EV2(<<EOT));
$PAR
If \( \tan( \theta ) = $sign \frac {$b} {$a} \)
and \( \sin ( \theta ) $inequality 0 \), then find
$PAR
(a) \( \sin( \theta ) = \) \{ ans_rule(15) \}
$PAR
(b) \( \cos( \theta ) = \) \{ ans_rule(15) \}
$PAR
(c) \( \sec( \theta ) = \) \{ ans_rule(15) \}
$PAR
(d) \( \csc( \theta ) = \) \{ ans_rule(15) \}
$PAR
(e) \( \cot( \theta ) = \) \{ ans_rule(15) \}
$PAR

EOT
$ans_a = sin($theta);
$ans_b = cos($theta);
$ans_c = 1/$ans_b;
$ans_d = 1/$ans_a;
$ans_e = $s*$a/$b;

# record the answers
ANS(num_cmp([$ans_a,$ans_b,$ans_c,$ans_d,$ans_e], relTol=>.1));
ENDDOCUMENT(); # This should be the last executable line in the problem.

