DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x=random(-4,4,1);
$y=random(-4,4,1);
$b1 = 2*$x - $y;
$b2 = $x + 2*$y;

BEGIN_TEXT
Use Cramer's rule to solve the system
\[
\begin{array}{l}
        2x-y = $b1 \\
        x+2y = $b2 \\
\end{array}
\]
$BR
\(x=\) \{ans_rule(25) \}
$BR
\(y=\) \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = $x;
$ans2 = $y;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.
