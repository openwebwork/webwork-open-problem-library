DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x=random(-4,4,1);
$y=random(-4,4,1);
$b1 = $x - 6*$y;
$b2 = 3*$x + 2*$y;

BEGIN_TEXT
Use Cramer's rule to solve the system
\[
\begin{array}{l}
        x-6y = $b1 \\
        3x+2y = $b2 \\
\end{array}
\]
$BR
\(x=\) \{ ans_rule(25) \}
$BR
\(y=\) \{ ans_rule(25) \}
$BR
END_TEXT

$ans1 = $x;
$ans2 = $y;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.
