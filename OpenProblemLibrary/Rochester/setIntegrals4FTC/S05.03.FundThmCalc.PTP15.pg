DOCUMENT();

loadMacros(
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$c=random(1,9,1);
$n=random(2,7,1); 
$k=random(1, 4, 1);
$a=2**$k; 
$b=random(3, 15, 2);

BEGIN_TEXT

Evaluate the indefinite integral
\[ \int \left( \frac{$c}{x^$n}+ \frac{$a}{$b x} \right) dx \]
$BR \{ans_rule(30)\} + C 

END_TEXT

$answer="$c/(-$n+1) * x**(-$n+1) + $a/$b * ln(abs(x))";

ANS(fun_cmp($answer, mode=>"antider",limits=>[1,2]));

ENDDOCUMENT();



