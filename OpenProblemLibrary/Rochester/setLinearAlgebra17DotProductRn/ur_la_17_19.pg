DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

foreach $i (1..4) { 
	$a[$i] = non_zero_random(-9,9,2);
}

if ($a[1]>0) { 
	foreach $i (1..4) { 
		$m[$i] = $a[$i];
	}
} else { 
        foreach $i (1..4) { 
                $m[$i] = - $a[$i];
        }
}
	
$v = Matrix([[$a[1]], [$a[2]], [$a[3]], [$a[4]]]);

$basis1 = Matrix([[-1*$m[2]], [$m[1]], [0], [0]]);
$basis2 = Matrix([[-1*$m[3]], [0], [$m[1]], [0]]);
$basis3 = Matrix([[-1*$m[4]], [0], [0], [$m[1]] ]);

$multians = MultiAnswer($basis1, $basis2,$basis3)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);


Context()->texStrings;
BEGIN_TEXT
Let \[\vec{v}=$v.\]
Find a basis of the subspace of \({\mathbb R}^4\) consisting of all vectors perpendicular to \(\vec{v}\). 
$BR
$BR
\{ $multians->ans_array \}, 
\{ $multians->ans_array \}, 
\{ $multians->ans_array \} 
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;
