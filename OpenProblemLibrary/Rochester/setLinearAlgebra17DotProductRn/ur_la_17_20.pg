DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(-1,1,2);
$b = random(2,4,1) * random(-1,1,2);
$c = non_zero_random(-4,4,1);
$d = non_zero_random(-4,4,1);

$e = random(-3,3,1);
$i = random(-1,1,2);
$f = $i + $a*$b*$e;
$g = non_zero_random(-4,4,1);
$h = random(-4,4,1);

$v = Matrix([[$a], [$b], [$c], [$d]]);
$u = Matrix([[$e], [$f], [$g], [$h]]);


$m = $a*$c - $a*$b*$g*$i + $b*$c*$e*$i;
$n = $a*$d - $a*$b*$h*$i + $b*$d*$e*$i;
$p = $g*$i - $a*$c*$e*$i;
$q = $h*$i - $a*$d*$e*$i;

$basis1 = Matrix([- $m, - $p, 1, 0])->transpose;
$basis2 = Matrix([- $n, - $q, 0, 1])->transpose;

$multians = MultiAnswer($basis1, $basis2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);



Context()->texStrings;
BEGIN_TEXT
Let \[ \vec{u} = $u, \vec{v} = $v, \]
and let \(W\) the subspace of \({\mathbb R}^4\) spanned by \(\vec{u}\) and \(\vec{v}\). 
Find a basis of \(W^{\perp}\), the orthogonal complement of \( W \) in \(\mathbb{R}^4 \). 
$BR
$BR
\{ $multians->ans_array \}, 
\{ $multians->ans_array \} 
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;
ENDDOCUMENT();       # This should be the last executable line in the problem.

