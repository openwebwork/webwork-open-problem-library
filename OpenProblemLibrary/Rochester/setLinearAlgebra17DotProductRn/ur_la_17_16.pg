DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$x1 = non_zero_random(-5,5,1);
$y1 = random(-4,4,2);
$x2 = non_zero_random(-4,4,2);
$y2 = non_zero_random(-5,5,1);
$x3 = non_zero_random(-2,2,1);
$y3 = - ($x1 * $y1 + $x2 * $y2) / $x3;
$x4 = non_zero_random(-4,4,1);
## $y4 = 0

$v1 = random(-20,20,1);
$v2 = random(-20,20,1);
$v3 = random(-20,20,1);
$v4 = random(-20,20,1);

$vx = $v1 * $x1 + $v2 * $x2 + $v3 * $x3 + $v4 * $x4;
$norm2x = $x1 * $x1 + $x2 * $x2 + $x3 * $x3 + $x4 * $x4; 
$projvx = $vx/$norm2x; 

$vy = $v1 * $y1 + $v2 * $y2 + $v3 * $y3;
$norm2y = $y1 * $y1 + $y2 * $y2 + $y3 * $y3; 
$projvy = $vy/$norm2y;

$ans1 = $projvx * $x1 + $projvy * $y1;
$ans2 = $projvx * $x2 + $projvy * $y2;  
$ans3 = $projvx * $x3 + $projvy * $y3;  
$ans4 = $projvx * $x4;

$P = Matrix([[$ans1],[$ans2],[$ans3],[$ans4]]);
$v = Matrix([[$v1], [$v2], [$v3], [$v4]]);

$x = Matrix([[$x1], [$x2], [$x3], [$x4]]);
$y = Matrix([[$y1], [$y2], [$y3], [0]]);

Context()->texStrings;
BEGIN_TEXT
Find the orthogonal projection of 
\[ \vec{v} = $v \]
onto the subspace \(W\) of \( {\mathbb R}^4 \) spanned by 
\[ $x \ \mbox{ and } \ $y. \]
$BR
\( {\rm proj}_W(\vec{v})= \) \{ $P->ans_array(15) \}
END_TEXT
Context()->normalStrings;
ANS($P->cmp);
COMMENT('MathObject version');
ENDDOCUMENT();       # This should be the last executable line in the problem.

