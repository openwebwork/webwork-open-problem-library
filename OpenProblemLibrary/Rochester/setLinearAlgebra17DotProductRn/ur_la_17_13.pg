DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$prod = 0;
$norm_x = 0;
$norm_y = 0;

foreach $i (0..1) {
	$x[$i] = non_zero_random(-5,5,1);
	$y[$i] = non_zero_random(-5,5,1);
 	if ($y[$i] == $x[$i]) { 
		$y[$i] = 6;
	}
	$prod = $prod + $x[$i] * $y[$i];
        $norm_x = $norm_x + $x[$i] * $x[$i];
        $norm_y = $norm_y + $y[$i] * $y[$i];

}


$value = $prod**2 /( $norm_x * $norm_y);
$value = sqrt($value);
if ($prod < 0) {$value = -$value;}

if ($value > 1) {$value = 1;}
if ($value < -1) {$value = -1;}  ## avoid round off errors

$angle = Compute("arccos( $value )");

$X = Matrix([[$x[0]], [$x[1]]]);
$Y = Matrix([[$y[0]], [$y[1]]]);

Context()->texStrings;
BEGIN_TEXT
Find the angle \( \alpha \) between the vectors 
\[ $X \ \mbox{ and } \ $Y. \]
$BR
\( \alpha = \) \{ans_rule(20)\}.
END_TEXT
Context()->normalStrings;

ANS($angle->cmp);
;
