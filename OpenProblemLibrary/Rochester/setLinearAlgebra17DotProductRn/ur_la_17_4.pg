DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(1,9,1);
$b = non_zero_random(-5,5,1);
$c = non_zero_random(-3,3,1);

$y1 = $b + $a;
$y2 = $b - $a;
$y3 = $c * $b;

@x = (1, 1, $c);
@y = ($y1, $y2, $y3);

$norm_x2 = 2+$c*$c;

@s = NchooseK(3,3);

# image of (1,0,0): 

$a[0][0] = 1/$norm_x2 + 1/2;
$a[0][1] = 1/$norm_x2 - 1/2;
$a[0][2] = $c/$norm_x2;

# image of (0,1,0):

$a[1][0] = 1/$norm_x2 - 1/2;
$a[1][1] = 1/$norm_x2 + 1/2;
$a[1][2] = $c/$norm_x2;

# image of (0,0,1):

$a[2][0] = $c/$norm_x2;
$a[2][1] = $c/$norm_x2;
$a[2][2] = $c*$c/$norm_x2;

$answer = Matrix([
[ $a[$s[0]][$s[0]], $a[$s[1]][$s[0]], $a[$s[2]][$s[0]] ],
[ $a[$s[0]][$s[1]], $a[$s[1]][$s[1]], $a[$s[2]][$s[1]] ],
[ $a[$s[0]][$s[2]], $a[$s[1]][$s[2]], $a[$s[2]][$s[2]] ],
]);

$vec1 = Matrix([[$x[$s[0]]], [$x[$s[1]]], [$x[$s[2]]]]);
$vec2 = Matrix([[$y[$s[0]]], [$y[$s[1]]], [$y[$s[2]]]]);

Context()->texStrings;
BEGIN_TEXT
Let \(W\) be the subspace of \( {\mathbb R}^3 \) spanned by the vectors 
\[ $vec1 \ \mbox{ and } \ $vec2. \]
Find the matrix \(A\) of the orthogonal projection onto \(W\). 
$BR
$BR
\(A=\) \{ $answer->ans_array(20) \}
END_TEXT
Context()->normalStrings;
ANS($answer->cmp);
;

ENDDOCUMENT();       # This should be the last executable line in the problem.

