DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "MatrixCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = 2**random(0,3,1) * random(-1,1,2);
$b = non_zero_random(-9,9,2);
$c = non_zero_random(-9,9,2);

$v = Matrix([[$a], [$b], [$c]]);

if ($a>0) { 
	$m = - $c;
	$n = - $b;
	$p = $a;
} else { 
        $m = $c;
        $n = $b;
        $p = - $a;
}

$basis1 = Matrix([[$m], [0], [$p]]);
$basis2 = Matrix([[$n], [$p], [0]]);


$multians = MultiAnswer($basis1, $basis2)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);


Context()->texStrings;
BEGIN_TEXT
Find two linearly independent vectors perpendicular to the vector \[\vec{v}= $v.\] 
$BR
\{ $multians->ans_array \}, 
\{ $multians->ans_array \} 
END_TEXT
Context()->normalStrings;

ANS($multians->cmp);
;
ENDDOCUMENT();       # This should be the last executable line in the problem.

