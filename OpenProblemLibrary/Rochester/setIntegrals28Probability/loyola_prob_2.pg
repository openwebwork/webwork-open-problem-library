loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$n=random(1,10,0.5);
$A=random(2,10,1);


BEGIN_TEXT
Find the value of \( \displaystyle C \) so that the function
\[ f(x) = \begin{cases}
 Cx^{$n} & \text{if}  \;\; 0 \leq x \leq $A \\
 0 & \text{otherwise}
\end{cases}
\]
is a density function.


$PAR

 \{ans_rule(30)\}
$PAR
END_TEXT

$ans1=((1+$n)/(($A)**(1+$n))) ;

ANS(num_cmp($ans1));

