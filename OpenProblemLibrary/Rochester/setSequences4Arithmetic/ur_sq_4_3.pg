DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-10,10,1);
$d = non_zero_random(-7,7,1);
$a2 = $a+$d;
$a3 = $a+2*$d;
$e = $a-$d;
$ans = "(n/2)*(2*$a+(n-1)*$d)";

BEGIN_TEXT


Find the sum $BR
\( $a + $a2 + $a3 + ... + ($e + $d n) \)

Answer: \{ans_rule(20)\}

END_TEXT

ANS(fun_cmp($ans, vars=>"n"));

ENDDOCUMENT();       # This should be the last executable line in the problem.
