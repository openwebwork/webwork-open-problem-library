DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-10,10,1);
$d = non_zero_random(-5,5,1);
$n = random(4,13,1);
$a2 = $a+$d;
$a3 = $a+2*$d;
$an = $a+($n-1)*$d;


BEGIN_TEXT

Find the \( $n^{th} \) term of the arithmetic sequence 
$PAR
\( $a , $a2 , $a3 , ...\)


Answer: \{ans_rule(10)\}

END_TEXT

ANS(num_cmp($an, mode=>"arith"));

