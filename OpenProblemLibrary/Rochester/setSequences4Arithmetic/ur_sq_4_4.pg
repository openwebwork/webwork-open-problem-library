DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-10,10,1);
$d = non_zero_random(-7,7,1);
$n = random(4,15,1);
$a2 = $a+$d;
$a3 = $a+2*$d;
$an = $a+($n-1)*$d;

$ans = ($n/2)*($a+$an);

BEGIN_TEXT

Find the sum
$PAR
\( $a + $a2 + $a3 + ... + $an \)

Answer: \{ans_rule(10)\}

END_TEXT

ANS(num_cmp($ans, mode=>"arith"));

ENDDOCUMENT();       # This should be the last executable line in the problem.
