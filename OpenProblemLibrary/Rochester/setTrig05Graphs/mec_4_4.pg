## DBsubject(Trigonometry)
## DBchapter(Trigonometric functions)
## DBsection(Sine & cosine functions - definitions, graphs, & properties)
## Institution(Rochester)
## MLT(Amp_per_shift_formula)
## Level(2)
## KEYWORDS('trigonometry','amplitude','period','phase shift')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$pi = 4*atan2(1,1);
$e = 2.71828;

$a = random(17,24,1);
$a_s = random(-1,1,2);
if ($a_s == -1) {$a_sign = '-'};
if ($a_s == 1) {$a_sign = ''};

$b = random(2,9,1);

$exp = non_zero_random(-4,4,1);
$d   = $e ** $exp;

$c_n = random(2,9,1);
$c_s = random(-1,1,2);
$c   = $c_s * $c_n * $d;

if ($c_s == -1) {$c_sign = '-'};
if ($c_s == 1) {$c_sign = '+'};

TEXT(EV2(<<EOT));
$PAR
Let \( y = $a_sign \sqrt {$a} \sin($b \pi x $c_sign $c_n e ^{$exp} ) \).
$PAR
What is the amplitude?  \{ ans_rule(15) \}
$PAR
What is the period?  \{ ans_rule(15) \}
$PAR
What is the phase shift?  \{ ans_rule(15) \}
$PAR
[NOTE:  If needed, you can enter \(\pi\) as 'pi' in your answers.]

EOT

$ans_1 = sqrt($a);
$ans_2 = 2 / $b;
$ans_3 = -$c / ($pi*$b);

# record the answers
ANS(num_cmp([$ans_1,$ans_2,$ans_3], relTol=>.1));
ENDDOCUMENT();        # This should be the last executable line in the problem.

