DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",         # used to display problem source button
   "PGcourse.pl",      # Customization file for the course
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Point");
Context()->flags->set(tolerance=>.01);



$a= Real( random(2,6,1) );
$s= Real( random(-1,1,2) );
$a = $a * $s;

$b= Real( random(2,7,1) );
$c= Real( non_zero_random(-6,6,1) );
$d= Real( random(-5,5,1) );
$e= Real( random(-5,5,1) );

if ($a*$d + $b*$e + $c == 0) { $c=7; }

$P = Point($d,$e);

# answer calculation
$t= ($a*$d +$b*$e+$c)/($a**2+$b**2);

$Q_ans = Point($d-$t*$a,  $e-$t*$b);
##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Find the point on the line
\( $a x + $b y + $c =0\) which is closest to the point \( $P \).
$PAR
Answer is \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#
#

Context()->{format}{number}='%0.2g'; #limit answers to 2 significant places

ANS($Q_ans->cmp);


COMMENT('MathObject version');

COMMENT('MathObject version');
ENDDOCUMENT();
