DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserNumberWithUnits.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

Context("Numeric");

$a = random(2,8,2);
$b = random(2,8,2);
if ($a == $b) {$b++;}
$c = random(380,390,2); 


Context()->texStrings;
BEGIN_TEXT
The top and bottom margins of a poster are $a cm and the side margins
are each $b cm.  If the area of printed material on the poster is
fixed at $c square centimeters, find the dimensions of the poster with
the smallest area.
$BR
$BR
\[
\begin{array}{|c|c|c|}
\hline
~~ & ~~ & ~~ \\
\hline
~~ & printed & ~~ \\
~~ & material & ~~ \\
\hline
~~ & ~~ & ~~ \\
\hline
\end{array}
\]
$BR
$BR
Width = \{ ans_rule(25) \} 
(include \{ helpLink('units') \})
$BR
Height = \{ ans_rule(25) \}
(include \{ helpLink('units') \})
END_TEXT
Context()->normalStrings;


$x = NumberWithUnits("((($b*$c)/$a)**(1/2)) + 2*$b","cm");
$y = NumberWithUnits("($c/((($b*$c)/$a)**(1/2))) + 2*$a","cm");

$showPartialCorrectAnswers = 1;

ANS( $x->cmp() );
ANS( $y->cmp() );

#ANS(num_cmp([$x,$y], format=>"%0.5f", relTol=>1, units => 'cm'));

;
ENDDOCUMENT(); 
