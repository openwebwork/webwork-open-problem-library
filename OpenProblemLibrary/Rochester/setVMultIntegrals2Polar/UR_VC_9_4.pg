DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1, 5);
$b = random(1, 5);

$ans = 4/3 * $PI * (($a+$b)**2 - $a**2)**(3/2);

BEGIN_TEXT
$PAR
A cylindrical drill with radius $a is used to bore a hole through the center of
a sphere of radius \{ $a + $b \}.  Find the volume of the ring shaped solid that
remains.
$PAR
\{ ans_rule(30) \}
END_TEXT
ANS(num_cmp($ans));

ENDDOCUMENT();
