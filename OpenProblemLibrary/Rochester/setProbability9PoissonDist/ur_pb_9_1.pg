DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

for ($i=0; $i<4; $i++) {
 	$x[$i] = random(1,9,1);
	$m[$i] = random(.5,6,.5);
}
$ans0 = ($m[0]**$x[0])*$E**(-$m[0])/fact($x[0]);

for ($i=0; $i<4; $i++) {
	for ($j=0; $j<($x[$i]+1); $j++) {
	$prob[$i][$j] = ($m[$i]**$j)/$E**($m[$i])/fact($j);

}
}

$sum1 = 0;
for ($j=0; $j<($x[1]+1); $j+=1){
	$sum1 = $sum1+$prob[1][$j];
}

$sum2 = 0;
for ($j=0; $j<($x[2]+1); $j+=1){
	$sum2 = $sum2+$prob[2][$j];
	$ans2 = 1-$sum2;
}
$sum3 = 0;
for ($j=0; $j<$x[3]; $j+=1){
	$sum3 = $sum3+$prob[3][$j];
}

BEGIN_TEXT
Given that \(x\) is a random variable having a Poisson distribution, compute the following: $PAR
(a) \( \) \( P(x = $x[0])\) when \(\mu = $m[0] \) $BR
\(P(x) = \) \{ans_rule(10)\} $PAR
(b) \( \) \( P(x \leq $x[1]) \)when \(\mu = $m[1] \) $BR
\(P(x) = \) \{ans_rule(10)\} $PAR
(c) \( \) \( P(x > $x[2])\) when \(\mu = $m[2] \) $BR
\(P(x) = \) \{ans_rule(10)\} $PAR
(d) \( \) \( P(x < $x[3])\) when \(\mu = $m[3] \) $BR
\(P(x) = \) \{ans_rule(10)\}
END_TEXT
ANS(num_cmp($ans0, tol=>0.0005));
ANS(num_cmp($sum1, tol=>0.0005));
ANS(num_cmp($ans2, tol=>0.0005));
ANS(num_cmp($sum3, tol=>0.0005));

ENDDOCUMENT();       # This should be the last executable line in the problem.
