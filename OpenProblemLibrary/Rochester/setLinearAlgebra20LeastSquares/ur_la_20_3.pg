DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

# we choose the matrix A, solution x, and a vector c orthogonal to the columns of A. 
# we set b=Ax+c, then x is the least-squares solution of Ax=b.

$a1 = random(2,6,2);
$a2 = random(-5,-1,1);
$a3 = non_zero_random(-2,2,1);

$x = non_zero_random(-5,5,1);

$c1 = random(1,6,1);
$c2 = random(2,6,2);
$c3 = - ($a1*$c1 + $a2*$c2)/$a3;

$b1 = $a1*$x + $c1;
$b2 = $a2*$x + $c2;
$b3 = $a3*$x + $c3;

$A = Matrix([[$a1], [$a2], [$a3]]);
$x = Matrix([$x]);
$b = Matrix([[$b1], [$b2], [$b3]]);

Context()->texStrings;
BEGIN_TEXT
Find the least-squares solution \(\vec{x}^*\) of the system 
\[ $A \vec{x} = $b. \]
$BR
\(\vec{x}^* = \) \{ $x->ans_array(10) \}  
END_TEXT
Context()->normalStrings;

ANS($x->cmp);
;
ENDDOCUMENT();       # This should be the last executable line in the problem.
