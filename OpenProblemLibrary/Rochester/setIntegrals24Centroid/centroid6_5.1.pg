DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,9,1);
$b=random(2,9,1);
$c=0;
$d=random(1,9,1);
$area = ($a/3)*($d**3-$c**3) + ($b/2)*($d**2-$c**2);
$xmoment = ($a/4)*($d**4-$c**4) + ($b/3)*($d**3-$c**3);
$ymoment = ($a*$a/10)*($d**5-$c**5) +($a*$b/4)*($d**4-$c**4) + ($b*$b/6)*($d**3-$c**3);
$xbar = $xmoment/$area;
$ybar = $ymoment/$area;

BEGIN_TEXT
Find the centroid \( (\bar x,\bar y) \) of the region bounded by:
\[ y =  $a x^2 + $b x, \ \ \ y =  0 , \ \ \ x =  $c, \ \ \ \mbox{and} \ \ \ x =  $d .\] 
$BR
\( \bar x \)= \{ans_rule(30)\}$BR
\( \bar y \)= \{ans_rule(30)\}$BR
END_TEXT

ANS(num_cmp($xbar));
ANS(num_cmp($ybar));

ENDDOCUMENT();        # This should be the last executable line in the problem.

