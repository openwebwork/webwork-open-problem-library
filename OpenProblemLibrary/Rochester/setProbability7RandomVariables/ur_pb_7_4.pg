\{row(1, $p1)\}
\{row(2, $p2)\}
\{row(3, ans_rule(20))\}
\{row(4, $p4)\}
\{row(5, $p5)\}
\{endtable()\}
END_TEXT
}

if ($missing == 4) {
BEGIN_TEXT 
