TEXT(beginproblem());
$showPartialCorrectAnswers = 0;


$b[0] = random(0,.3,.1);
$b[1] = random(.1,.3,.1);
$b[2] = random(.1,.3,.1);
$b[3] = 1-$b[0]-$b[1]-$b[2];

$b1 = random(0,.3,.1);
$b2 = random(.1,.3,.1);
$b3 = random(-.3,-.1,.1);
