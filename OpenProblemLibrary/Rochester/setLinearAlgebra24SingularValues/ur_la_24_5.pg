DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = non_zero_random(-9,9,1);
$b = non_zero_random(-9,9,1);
$mb = - $b; 

$ans = Compute("sqrt($a*$a + $b*$b)");

$A = Matrix([[$a, 0, $mb], [$b, 0, $a]]);

Context()->texStrings;
BEGIN_TEXT
Find the singular values \( \sigma_1 \ge \sigma_2 \ge \sigma_3 \) of 
\[ A = $A. \]
$BR
\( \sigma_1 = \) \{ans_rule(15)\},
$BR
\( \sigma_2 = \) \{ans_rule(15)\},
$BR
\( \sigma_3 = \) \{ans_rule(15)\}.
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
ANS($ans->cmp);
ANS(Compute("0")->cmp);
;
