DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = non_zero_random(-2,2,1);
$b = non_zero_random(-2,2,1);
$c = random(-2,2,1);
$d = non_zero_random(-2,2,1);

$p = $a*$a + $b*$b + $c*$c + $d*$d;
$q = ($a*$d - $b*$c)**2;
$discr = $p*$p - 4*$q;

## roots are (p+-sqrt(discr))/2 
## singular values are sqrt of these

$ans1 = Compute("sqrt(($p + sqrt($discr))/2)");
$ans2 = Compute("sqrt(($p - sqrt($discr))/2)");

$A = Matrix([[$a, $b], [$c, $d]]);

Context()->texStrings;
BEGIN_TEXT
Find the singular values \( \sigma_1 \ge \sigma_2 \) of 
\[ A = $A. \]
$BR
\( \sigma_1 = \) \{ans_rule(20)\},
$BR
\( \sigma_2 = \) \{ans_rule(20)\}.
END_TEXT
Context()->normalStrings;

ANS($ans1->cmp);
ANS($ans2->cmp);
COMMENT('MathObject version');
ENDDOCUMENT();       # This should be the last executable line in the problem.

