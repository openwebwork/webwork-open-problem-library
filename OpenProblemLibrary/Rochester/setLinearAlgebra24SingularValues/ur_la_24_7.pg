DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

#$U = new Matrix(4,4);

foreach $i (1..4) { 
	foreach $j (1..4) {
	$e[$i][$j] = 1/2;
	}
}

$e[2][3] = -1/2;
$e[2][4] = -1/2;
$e[3][2] = -1/2;
$e[3][4] = -1/2;
$e[4][2] = -1/2;
$e[4][3] = -1/2;

@slice1 = NchooseK(4,4);
@slice2 = NchooseK(4,4);

foreach $i (1..4) { 
	foreach $j (1..4) { 
		$u[$i][$j] = $e[$slice1[$i-1]+1][$slice2[$j-1]+1];
		#$U -> assign($i, $j, $u[$i][$j]);
	}
}

$U = Matrix([
  [ $u[1][1], $u[1][2], $u[1][3], $u[1][4] ],
  [ $u[2][1], $u[2][2], $u[2][3], $u[2][4] ],
  [ $u[3][1], $u[3][2], $u[3][3], $u[3][4] ],
  [ $u[4][1], $u[4][2], $u[4][3], $u[4][4] ],
]);

#$S = new Matrix(4,2);

$sigma1 = random(10,40,10);
$sigma2 = random(10,40,10);

$S = Matrix([
  [$sigma1,0],
  [0,$sigma2],
  [0,0],
  [0,0],
]);


#$V = new Matrix(2,2); 

@f = (0.6, 0.8, 0.6, 0.8, 0.6, 0.8, 0.6, 0.8);
$tag = random(0,3,1);
$f[$tag] = - $f[$tag];
$f[$tag+4] = - $f[$tag+4];
$first = random(0,3,1);

$v[1][1] = $f[$first];
$v[1][2] = $f[$first+1];
$v[2][2] = $f[$first+2];
$v[2][1] = $f[$first+3];

$V = Matrix([
  [ $v[1][1], $v[1][2] ],
  [ $v[2][1], $v[2][2] ],
]);

#$A = new Matrix(4,2);

$A = $U * $S * $V;

foreach $i (1..4) { 
	$b[$i] = non_zero_random(-5,5,1);
} 

foreach $i (1..2) { 
	$bu[$i] = 0;
	foreach $j (1..4) {
		$bu[$i] += $b[$j] * $u[$j][$i];
	}
}

$x1 = $bu[1]*$v[1][1]/$sigma1 + $bu[2]*$v[2][1]/$sigma2;
$x2 = $bu[1]*$v[1][2]/$sigma1 + $bu[2]*$v[2][2]/$sigma2;

$X = Matrix([[$x1],[$x2]]);
$B = Matrix([[$b[1]], [$b[2]], [$b[3]], [$b[4]]]);

Context()->texStrings;
BEGIN_TEXT
Let \[ A = $A. \]
A singular value decomposition of \(A\) is 
\[ A = $U $S $V. \]
Find the least-squares solution of the linear system \( A\vec{x} = \vec{b} \) where
\[ \vec{b} = $B. \]
$BR
\( \vec{x}^* = \) \{ $X->ans_array(15) \}
END_TEXT
Context()->normalStrings;

ANS($X->cmp);

ENDDOCUMENT();       # This should be the last executable line in the problem.
