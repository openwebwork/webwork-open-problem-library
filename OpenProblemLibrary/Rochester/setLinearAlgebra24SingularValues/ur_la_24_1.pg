DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$ans1 = random(5,9,1);
$ans2 = random(1,4,1);

$a = $ans1 * random(-1,1,2);
if ($a < 0) { $b = $ans2 * random(-1,1,2); } 
else { $b = - $ans2; } 

$A = Matrix([[$a, 0], [0, $b]]);

Context()->texStrings;
BEGIN_TEXT
Find the singular values \( \sigma_1 \ge \sigma_2 \) of 
\[ A = $A. \]
$BR
\( \sigma_1 = \) \{ans_rule(10)\},
$BR
\( \sigma_2 = \) \{ans_rule(10)\}.
END_TEXT
Context()->normalStrings;

ANS(Compute("$ans1")->cmp);
ANS(Compute("$ans2")->cmp);
;
