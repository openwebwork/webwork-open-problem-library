);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(3,5,1);
$deriv = "x^(1/$a-1)/($a*(1-x^(2/$a)))";

BEGIN_TEXT
If 
\[ f(x) =  \tanh^{-1} \sqrt[$a]{x} \]
then \( f'( x ) =\) \{ans_rule(50) \}.
$BR
END_TEXT

ANS(fun_cmp($deriv));

