## DBsubject(Differential equations)
## DBchapter(Systems of differential equations)
## DBsection(Distinct real eigenvalues)
## Institution(Rochester)
## Level(4)
## KEYWORDS('differential equation' 'first order' 'matrices')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$v11 = random(1,3,2);
$v21 = random(1,2,1);
$v12 = 3 - $v21;
$v22 = 4 - $v11; 

$S = new Matrix(2,2);
$S -> assign(1,1,$v11);
$S -> assign(1,2,$v12);
$S -> assign(2,1,$v21);
$S -> assign(2,2,$v22);

$Sinv = new Matrix(2,2);
$Sinv -> assign(1,1, $v22);
$Sinv -> assign(1,2, - $v12);
$Sinv -> assign(2,1, - $v21);
$Sinv -> assign(2,2, $v11);

$eig1 = random(2,5,1) * random(-1,1,2);
$eig2 = random(2,5,1) * random(-1,1,2);
if ($eig2 == $eig1) { $eig2 = - $eig2; } 

$e = new Matrix(2,2);
$e -> assign(1,1,$eig1);
$e -> assign(1,2,0);
$e -> assign(2,1,0);
$e -> assign(2,2,$eig2);

$c1 = non_zero_random(-5,5,1);
$c2 = non_zero_random(-5,5,1);

$M = new Matrix(2,2);
$M = $S * $e * $Sinv; 

$rhs = new Matrix(2,1);
$rhs -> assign(1,1, $c1*$v11 + $c2*$v12);
$rhs -> assign(2,1, $c1*$v21 + $c2*$v22);


BEGIN_TEXT

Solve the system 
$BR
\{ mbox( "\( \displaystyle \frac{dx}{dt} = \)", display_matrix($M), "\(x\)" ) \} 
$BR 
with the initial value \{ mbox( "\( x(0) = \)", display_matrix($rhs), "." ) \} 
$BR 
\{ mbox( "\( x(t) = \)", answer_matrix(2,1,40), "." ) \} 

END_TEXT

$ans1 = "$c1*e^($eig1*t)*$v11 + $c2*e^($eig2*t)*$v12";
$ans2 = "$c1*e^($eig1*t)*$v21 + $c2*e^($eig2*t)*$v22";

ANS(fun_cmp($ans1, vars => 't'));
ANS(fun_cmp($ans2, vars => 't')); 

ENDDOCUMENT();       # This should be the last executable line in the problem.

