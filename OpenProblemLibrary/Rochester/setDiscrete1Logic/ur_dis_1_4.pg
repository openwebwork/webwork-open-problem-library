#Numerical Answer

$x=random(1,9,1);
$y=random(1,9,1);
$z=random(1,9,1);
$b=$x + 1;
$c=0;
$d=0;

if ($x < $y) { 
$c = $b;
}
else {
$c= $x;
}

if ($x == $z) {
$d = $x;
}
else {
$d = $b;
}

BEGIN_TEXT
What is the value of x after each of the following statements is
encountered in a computer program, if x= $x before the statement
is reached? $BR
$PAR
(a) if \( x < $y \) then \( x := x + 1 \) $BR
\{ ans_rule(10) \} 
END_TEXT

ANS(num_cmp($c));

BEGIN_TEXT
(b) if \( (1+1=3) \)  OR \( ( $y > x ) \)  then \(x := x + 1\) $BR
\{ ans_rule(10) \} 
END_TEXT

ANS(num_cmp( $c ) );

BEGIN_TEXT
(c) if \( (2+3=5) \) AND \( (3+4=7) \) then \(x := x + 1\) $BR
\{ ans_rule(10) \} 
END_TEXT

ANS(num_cmp( $b ) );

BEGIN_TEXT
(d) if \( (1+1=2) \) XOR \( (x=$z) \) then \(x := x + 1\) $BR
\{ ans_rule(10) \} 
END_TEXT

ANS(num_cmp( $d ) );




