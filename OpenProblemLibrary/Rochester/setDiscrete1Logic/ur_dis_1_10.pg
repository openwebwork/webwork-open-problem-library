DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "logicMacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$neg = negate();

@header=("\( p \)","\( q \)",
"\( p \oplus q \)",
"\(  $neg (p \oplus q) \)",
"\( p \leftrightarrow q \)");
@Aa=qw(T T F T T);
@Ab=qw(T F T F F);
@Ac=qw(F T T F F);
@Ad=qw(F F F T T);

# evaulate the tex commands in the header
@header = map {EV2($_) } @header;

BEGIN_TEXT
Complete the following truth table by filling in the blanks with T or F as
appropriate.
$PAR
END_TEXT

TEXT(
begintable(1+scalar(@header)), 
	row(@header),
	row("T","T",ans_rule(10),ans_rule(10),ans_rule(10)),
	row("T","F",ans_rule(10),ans_rule(10),ans_rule(10)),
	row("F","T",ans_rule(10),ans_rule(10),ans_rule(10)),
	row("F","F",ans_rule(10),ans_rule(10),ans_rule(10)),
endtable() 
);

ANS(str_cmp($Aa[2]) );
ANS(str_cmp($Aa[3]) );
ANS(str_cmp($Aa[4]) );

ANS(str_cmp($Ab[2]) );
ANS(str_cmp($Ab[3]) );
ANS(str_cmp($Ab[4]) );

ANS(str_cmp($Ac[2]) );
ANS(str_cmp($Ac[3]) );
ANS(str_cmp($Ac[4]) );

ANS(str_cmp($Ad[2]) );
ANS(str_cmp($Ad[3]) );
ANS(str_cmp($Ad[4]) );

$cmc=new_checkbox_multiple_choice();

$cmc -> qa (
"The propositions in the last two columns are",
"logically equivalent"
);

$cmc -> extra(
"not logically equivalent",
"not logically comparable"
);


BEGIN_TEXT
$PAR
\{ $cmc -> print_q \}
$PAR
\{ $cmc -> print_a \}
END_TEXT

ANS(checkbox_cmp( $cmc -> correct_ans ) );

COMMENT("Logical symbols defined in logicMacros.pl are used in this problem. They can be overwritten by placing a copy of logicMacros.pl in the course directory and modifying the subroutines in that file.");
ENDDOCUMENT();        # This should be the last executable line in the problem.;
