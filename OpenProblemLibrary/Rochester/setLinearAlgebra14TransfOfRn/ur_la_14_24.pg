DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

@c = NchooseK(10,8);

$t11 = $c[4]*$c[0] + $c[5]*$c[2];
$t12 = $c[4]*$c[1] + $c[5]*$c[3];
$t21 = $c[6]*$c[0] + $c[7]*$c[2];
$t22 = $c[6]*$c[1] + $c[7]*$c[3];

$A = Matrix([[$c[0], $c[1]], [$c[2], $c[3]]]);

$B = Matrix([[$c[4], $c[5]], [$c[6], $c[7]]]);

$T = Matrix([
[$t11,$t12],
[$t21,$t22],
]);

Context()->texStrings;
BEGIN_TEXT
Let \[ A= $A \ \mbox{ and } B= $B. \]
Find the matrix \(C\) of the linear transformation \( \ T(x)=B(A(x)). \)
$BR
$BR
\(C=\) \{ $T->ans_array \}
END_TEXT
Context()->normalStrings;

ANS( $T->cmp );
;
