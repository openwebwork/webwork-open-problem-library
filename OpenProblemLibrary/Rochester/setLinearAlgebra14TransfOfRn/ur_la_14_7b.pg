DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"unionLists.pl",
"parserPopUp.pl",
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$rank = random(1,3,1);
$ker = 4-$rank;
if ($rank == 3) { $onto = "surjective"; } else { $onto = "not surjective"; } 

$a11 = non_zero_random(-5,5,1);
$a12 = random(-5,5,1);
$a13 = non_zero_random(-5,5,1);
$a14 = random(-5,5,1);

if ($rank == 1) { 

	$m = random(-2.5,2.5,1);
	$a21 = $m * $a11;
 	$a22 = $m * $a12;
	$a23 = $m * $a13;
	$a24 = $m * $a14; 

	$n = random(-3,3,1);
	$a31 = $n * $a11;
        $a32 = $n * $a12;
        $a33 = $n * $a13;
        $a34 = $n * $a14;
}

if ($rank == 2) { 

	$m = random(-2.5,2.5,1); 
        $a21 = $m * $a11;
        $a22 = $m * $a12;
        $a23 = $m * $a13;
	$d = non_zero_random(-5,5,.5);
        $a24 = $m * $a14+$d;

        $n = non_zero_random(-3,3,1);
	$p = non_zero_random(-3,3,1);
        $a31 = $n * $a11 + $p * $a21;
        $a32 = $n * $a12 + $p * $a22;
        $a33 = $n * $a13 + $p * $a23;
        $a34 = $n * $a14 + $p * $a24;

}

if ($rank == 3) {

        $m = random(-2.5,2.5,1);
        $a21 = $m * $a11;
        $d = non_zero_random(-5,5,.5);
        $a22 = $m * $a12 + $d;
        $a23 = $m * $a13;
        $a24 = $m * $a14;

        $n = non_zero_random(-3,3,1);
        $p = non_zero_random(-3,3,1);
        $a31 = $n * $a11 + $p * $a21;
        $a32 = $n * $a12 + $p * $a22;
        $a33 = $n * $a13 + $p * $a23;
        $e = non_zero_random(-5,5,.5);
        $a34 = $n * $a14 + $p * $a24 + $e;
 
}

$A = Matrix([[$a11, $a12, $a13, $a14], 
				  [$a21, $a22, $a23, $a24], 
				  [$a31, $a32, $a33, $a34]]);

$popup1 = PopUp(['choose','surjective','not surjective'],$onto);
$popup2 = PopUp(['choose','injective','not injective'],'not injective');

Context()->texStrings;
BEGIN_TEXT
The matrix 
\[A= $A\]
is a matrix of a linear transformation \( T: {\mathbb R}^k \rightarrow {\mathbb R}^n \). 
\{ BeginList('OL',type=>'a') \}
$ITEM Find \( k \) and \( n \).  $BR
\( k= \)\{ans_rule(5)\}, \( n= \)\{ans_rule(5)\}, 
$ITEMSEP
$ITEM Find the dimension of the kernel (or null space) and image (or range). $BR
\(\mbox{dim(Kernel}(T))= \) \{ans_rule(5)\}, \( \mbox{dim(Image}(T))= \)\{ans_rule(5)\}. 
$ITEMSEP
$ITEM Is \(T\) surjective (or onto)? \{ $popup1->menu \}
$ITEMSEP
$ITEM Is \(T\) injective (or one-to-one)? \{ $popup2->menu \}
\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;

ANS(Compute(4)->cmp);
ANS(Compute(3)->cmp);
ANS(Real($ker)->cmp);
ANS(Real($rank)->cmp);
ANS($popup1->cmp);
ANS($popup2->cmp);

COMMENT('MathObject version');

ENDDOCUMENT();