loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$v1 = random(1,6,1);
$v2 = random(1,6,2);
if ($v1 == $v2) { $v2 = $v2+1; } 

$s = $v1**2 + $v2**2;
$a = $v1**2/$s;
$b = $v1*$v2/$s;
$c = $b;
$d = $v2**2/$s;

$A = Matrix([[$a,$b],[$c,$d]]);

$v = Matrix([[$v1], [$v2]]);


Context()->texStrings;
BEGIN_TEXT
Find the matrix \(A\) of the orthogonal projection onto the line \( L \) in \( {\mathbb R} ^2 \) that
consists of all scalar multiples of the vector \( $v \). 
$BR
$BR
\( A = \) \{ $A->ans_array \}
END_TEXT
Context()->normalStrings;

ANS( $A->cmp );
;
