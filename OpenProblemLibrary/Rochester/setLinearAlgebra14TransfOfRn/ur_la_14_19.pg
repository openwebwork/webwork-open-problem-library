DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


Context('Matrix');

@v = (1, 2, 2);
@slice = NchooseK(3,3);
@sv = @v[@slice];

$v1 = $sv[0] * random(-1,1,2);
$v2 = $sv[1] * random(-1,1,2);
$v3 = $sv[2] * random(-1,1,2);

$x1 = random(1,9,1);
$x2 = random(1,9,1);
$x3 = random(1,9,1);

$vx = $v1 * $x1 + $v2 * $x2 + $v3 * $x3;
$k = $vx/9;

$pr1 = $k * $v1;
$pr2 = $k * $v2;
$pr3 = $k * $v3;

$ans1 = 2*$pr1 - $x1;
$ans2 = 2*$pr2 - $x2;
$ans3 = 2*$pr3 - $x3;

$ans = Matrix([[$ans1],[$ans2],[$ans3]]);

$v = Matrix([[$v1], [$v2], [$v3]]);
$x = Matrix([[$x1], [$x2], [$x3]]);

Context()->texStrings;
BEGIN_TEXT
Let \( L \) be the line in \( {\mathbb R} ^3 \) that consists of all 
scalar multiples of the 
vector \($v \).
Find the reflection of the vector 
\(\vec{x}=$x\) in the line \( L \).
$BR
\( {\rm Refl}_L(v) = \) \{ $ans->ans_array \}
END_TEXT
Context()->normalStrings;

ANS( $ans->cmp );
;
ENDDOCUMENT();
