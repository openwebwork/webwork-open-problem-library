DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$v1 = random(1,6,1);
$v2 = random(1,6,2);
if ($v1 == $v2) { $v2 = $v2+1; } 

$s = $v1**2 + $v2**2;
$a = $v1**2/$s;
$b = $v1*$v2/$s;
$c = $b;
$d = $v2**2/$s;

$a = 2*$a - 1;
$b = 2*$b;
$c = 2*$c;
$d = 2*$d - 1;

$A = Matrix([[$a,$b],[$c,$d]]);

$vec = Matrix([[$v1], [$v2]]);

Context()->texStrings;
BEGIN_TEXT
Find the matrix \(A\) of the reflection in the line \( L \) in \( {\mathbb R} ^2 \) that
consists of all scalar multiples of the vector \( $vec .\)
$BR
$BR
\(A=\) \{ $A->ans_array \}
END_TEXT
Context()->normalStrings;

ANS( $A->cmp );
COMMENT('MathObject version');
ENDDOCUMENT();