DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix')->variables->are(
'x1'=>'Real',
'x2'=>'Real',
'x3'=>'Real',
);

$a = random(2,9,1) * random(-1,1,2);
$b = random(-1,1,2);
$c = random(2,9,1) * random(-1,1,2);
if ($b==1) {$y1 = "$a x1 + x2 + $c x3";} else {$y1 = "$a x1 - x2 + $c x3";} 

$d = random(2,9,1) * random(-1,1,2);
$e = random(2,9,1) * random(-1,1,2);
$f = random(2,9,1) * random(-1,1,2);
$case = random(1,3,1);
if ($case == 1) {
	$d = 0;
	$y2 = "$e x2 + $f x3";	
}
if ($case == 2) {
        $e = 0; 
        $y2 = "$d x1 + $f x3";
}
if ($case == 3) {
        $f = 0; 
        $y2 = "$d x1 + $e x2";
}

$x = Matrix([['x1'], ['x2'], ['x3']]);

$Tx = Matrix([[$y1], [$y2]]);

$M = Matrix([
[$a,$b,$c],
[$d,$e,$f],
]);

Context()->texStrings;
BEGIN_TEXT
Find the matrix \(M\) of the linear transformation \(T:{\mathbb R}^3 \rightarrow {\mathbb R}^2\) given by 
\[ T\left($x\right) = $Tx.\]
$BR
\(M=\) \{ $M->ans_array \}
END_TEXT
Context()->normalStrings;

ANS( $M->cmp );
;
ENDDOCUMENT();
