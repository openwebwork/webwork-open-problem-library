DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(2,6,1);
$d = random(2,6,1);
$bc = $a * $d - 1;
$b = $bc - 1;
$c = $bc/$b;
while (int($c) < $c) {
	$b = $b-1;
 	$c = $bc/$b;
}
$b = - $b;
$c = - $c;

$NO_SPACE = '@{}';

Context()->texStrings;
BEGIN_TEXT

Find the inverse of the linear transformation

\[ \begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
   y_1 & = & $a x_1 & + $b x_2 \cr
   y_2 & = & $c x_1 & + $d x_2 
   \end{array}  \] 
$BR
\(x_1=\) \{ans_rule(5)\} \(y_1+\) \{ans_rule(5)\} \(y_2\), $BR 
\(x_2=\) \{ans_rule(5)\} \(y_1+\) \{ans_rule(5)\} \(y_2\).

END_TEXT
Context()->normalStrings;

ANS(Real("$d")->cmp);
ANS(Real("- $b")->cmp);
ANS(Real("- $c")->cmp);
ANS(Real("$a")->cmp);
;
ENDDOCUMENT();
