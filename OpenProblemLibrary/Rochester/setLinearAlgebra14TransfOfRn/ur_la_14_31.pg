DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(-5,5,1);
$b = non_zero_random(-5,5,1);
$c = random(-5,5,1);
$d = random(-5,5,1);

$det = $a*$d - $b*$c;

while ($det == 0) { 
	$a = $a + 1; 
	$d = $d + 1; 
	$det = $a*$d - $b*$c;

} 

$A = Matrix([[$a, $b], [$c, $d]]);
$M = $A->inverse;

Context()->texStrings;
BEGIN_TEXT
Let \(T:{\mathbb R}^2 \rightarrow {\mathbb R}^2\) be given by 
\[ T(\vec{x})=$A \vec{x}. \]
Find the matrix \(M\) of the inverse linear transformation, \(T^{-1}\). 
$BR
$BR
\(M=\) \{ $M->ans_array \} 
END_TEXT
Context()->normalStrings;

ANS( $M->cmp );
;
