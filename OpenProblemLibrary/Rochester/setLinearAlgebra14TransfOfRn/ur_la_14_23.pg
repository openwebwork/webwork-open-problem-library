DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

@axes = ('\(x\)', '\(y\)', '\(z\)');
$axis_tag = random(0,2,1);
$axis = $axes[$axis_tag];

@dirs = ("clockwise", "counterclockwise");
$dir_tag = random(0,1,1);
$dir = $dirs[$dir_tag];

@a11 = ( 1,  0,  0,  1,  0,  0);
@a21 = ( 0,  0, -1,  0,  0,  1);
@a31 = ( 0,  1,  0,  0, -1,  0);

@a12 = ( 0,  0,  1,  0,  0, -1);
@a22 = ( 0,  1,  0,  0,  1,  0);
@a32 = (-1,  0,  0,  1,  0,  0);

@a13 = ( 0, -1,  0,  0,  1,  0);
@a23 = ( 1,  0,  0, -1,  0,  0);
@a33 = ( 0,  0,  1,  0,  0,  1);

$ans_tag = $axis_tag + $dir_tag*3;

$A = Matrix([
[ $a11[$ans_tag], $a12[$ans_tag], $a13[$ans_tag] ],
[ $a21[$ans_tag], $a22[$ans_tag], $a23[$ans_tag] ],
[ $a31[$ans_tag], $a32[$ans_tag], $a33[$ans_tag] ],
]);

Context()->texStrings;
BEGIN_TEXT
Find the matrix \(A\) of the rotation about the ${axis}-axis through an angle of \(\displaystyle\frac{\pi}{2}\), $dir as viewed
from the positive ${axis}-axis.
$BR
\(A=\) \{ $A->ans_array \}
END_TEXT
Context()->normalStrings;

ANS( $A->cmp );
;
ENDDOCUMENT();
