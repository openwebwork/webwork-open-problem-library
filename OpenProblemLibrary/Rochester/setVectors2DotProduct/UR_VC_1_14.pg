DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-10, 10);
$b = random(-10, 10);
$c = random(-10, 10);

$dist = sqrt(($a)**2 + ($b)**2 + ($c)**2);

BEGIN_TEXT
Find a unit vector in the same direction as \( {\mathbf a} = ($a, $b, $c)\).
$BR $BR
(\{ ans_rule(20) \},
END_TEXT
ANS(num_cmp($a/$dist));

BEGIN_TEXT
\{ ans_rule(20) \},
END_TEXT
ANS(num_cmp($b/$dist));

BEGIN_TEXT
\{ ans_rule(20) \})
END_TEXT
ANS(num_cmp($c/$dist));

ENDDOCUMENT();
