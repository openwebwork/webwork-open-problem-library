TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(40,80,4);
$r=-ln(2)/28;
$b=$a*exp($r*56);

BEGIN_TEXT
The half-life of strontium-90 is 28 years. How long will it take a $a mg sample
to decay to a mass of $b mg?
$BR
Your answer is \{ans_rule(15) \} years.
$BR
END_TEXT

$ans1 = 56;

ANS(num_cmp($ans1));

