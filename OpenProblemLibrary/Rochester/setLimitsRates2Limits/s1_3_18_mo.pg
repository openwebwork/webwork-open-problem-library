##DESCRIPTION
##  Evalute a limit of a fraction of two polynomials,
##  involves factoring a quadratic polynomial
##ENDDESCRIPTION


##Tagged by ynw2d

## DBsubject(Calculus - single variable)
## DBchapter(Limits and continuity)
## DBsection(Evaluating limits - factoring)
## MLT(elf-e)
## Level(2)
## MO(1)
## KEYWORDS('Calculus')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",         # used to display problem source button
   "PGcourse.pl",      # Customization file for the course
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#


$a = random(1,4,1);
$b = random(6,10,1);
$t = -$a+$b;
$n = $a*$b;

$fun = Compute("( x - $a )/(x^2 + $t x - $n )")->reduce ;

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

Evaluate the limit
\[ \lim_{ x \rightarrow $a } \frac { x - $a } {x^2 + $t x - $n } \]
$BR \{ans_rule(25) \}
$BR

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

$ans = Compute("1/($a + $b)");
ANS($ans->cmp);

$denom = $a+$b; 

BEGIN_SOLUTION

$SOL $BR
\( \displaystyle \lim_{ x \rightarrow $a } \frac { x - $a } {x^2 + $t x - $n } = 
\lim_{ x \rightarrow $a } \frac { x - $a } { (x- $a)(x+$b) }  = 
\lim_{ x \rightarrow $a } \frac {1}{x+$b} = \frac{1}{$a+$b} = \frac{1}{$denom} = $ans\)

END_SOLUTION


COMMENT('MathObject version');

COMMENT('MathObject version');
ENDDOCUMENT();

