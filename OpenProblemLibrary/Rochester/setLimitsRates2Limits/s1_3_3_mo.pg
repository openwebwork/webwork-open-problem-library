DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#


$a1 = random(3,8,1);
$b1 = random(3,8,1);
$c1 = random(3,8,1);
$d1 = random(3,8,1);
$e1 = Real( random(3,8,1) );

$fun = Compute("($a1 x^2 + $b1 )( $c1 x + $d1)") ;

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Evaluate the limit
\[ \lim_{ x \rightarrow $e1 }  $fun  \]
$BR \{ans_rule(25) \}

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS($fun->eval(x=>$e1) ->reduce ->cmp );


;

;
ENDDOCUMENT();

