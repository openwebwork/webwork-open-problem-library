## AuthorText1('Stewart, Redlin, Watson')
## EditionText1('3')
## Section1('7.4')
## Problem1('11')
## KEYWORDS('trigonometry','inverse trigonometric functions', 'inverse functions')

DOCUMENT();

loadMacros(
	'PGstandard.pl',
	'MathObjects.pl'
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric')->functions->disable('Trig');
Context()->flags->set(
	reduceConstants => 0,
	reduceConstantFunctions => 0,
	formatStudentAnswer => parsed
);

@args = map { Formula($_) } (
	"-1", "-(sqrt(3)/2)", "-(sqrt(2)/2)", "-(1/2)",
	"0", "1/2", "sqrt(2)/2", "sqrt(3)/2", "1"
);

do {
	$t1 = random(0, 8);
	$t2 = random(0, 8);
	$t3 = random(0, 8);
} until (
	$t1 - $t2
	and $t1 - $t3
	and $t2 - $t3
);

@answers = map { $_->cmp } (@args[$t1, $t2, $t3]);

Context()->texStrings;
BEGIN_TEXT
Evaluate the following expressions.
$BR $BR
${BBOLD}a.${EBOLD}$SPACE
\( \sin \left( \sin^{-1} \left( $args[$t1]
\right) \right) = \) \{ ans_rule(8) \}
$BR $BR
${BBOLD}b.${EBOLD}$SPACE
\( \cos \left( \cos^{-1} \left( $args[$t2]
\right) \right) = \) \{ ans_rule(8) \}
$BR $BR
${BBOLD}c.${EBOLD}$SPACE
\( \tan \left( \tan^{-1} \left( $args[$t3]
\right) \right) = \) \{ ans_rule(8) \}
END_TEXT
Context()->normalStrings;

ANS(@answers);

ENDDOCUMENT();