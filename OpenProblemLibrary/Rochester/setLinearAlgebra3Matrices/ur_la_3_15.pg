######################################
#  Initialization

DOCUMENT() ;        
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());

#######################################
#  Setup

$a = non_zero_random(-5,5,1);
$b = non_zero_random(-5,5,1);

$a1 = 1;
$a2 = non_zero_random(-4,4,1);
$a3 = non_zero_random(-3,3,1);

$k = non_zero_random(-2,2,1);

$b1 = $k + random(1,9,1);
$b2 = $k * $a2;
$b3 = $k * $a3 - random(-5,-1,1);

$v1 = $a*$a1 + $b*$b1;
$v2 = $a*$a2 + $b*$b2;
$v3 = $a*$a3 + $b*$b3;

#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find \(a\) and \(b\) such that
\[
\left\lbrack
\begin{array}{r}
$v1 \\
$v2 \\
$v3
\end{array}
\right\rbrack
=
a
\left\lbrack
\begin{array}{r}
$a1 \\
$a2 \\
$a3
\end{array}
\right\rbrack
+
b
\left\lbrack
\begin{array}{r}
$b1 \\
$b2 \\
$b3
\end{array}
\right\rbrack.
\]
$BR
\(a=\) \{ans_rule(10)\}
$BR
\(b=\) \{ans_rule(10)\}
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( Compute("$a")->cmp() );
ANS( Compute("$b")->cmp() );

ENDDOCUMENT();
