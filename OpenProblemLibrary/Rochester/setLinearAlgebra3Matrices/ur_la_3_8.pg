#  Initialization

DOCUMENT() ;        
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserVectorUtils.pl",
"PGcourse.pl"
) ;
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix');

$A = Matrix([
[non_zero_random(-4,4,1),random(-4,4,1)],
[random(-4,4,1),non_zero_random(-4,4,1)],
[non_zero_random(-4,4,1),random(-4,4,1)]
]);

$x = Matrix([
[non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1)]
]);

$answer = $A * $x;


#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the following matrix product.
$BR
$BR
\( $A $x =\) \{ $answer->ans_array() \}
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( $answer->cmp() );

COMMENT('MathObject version');

