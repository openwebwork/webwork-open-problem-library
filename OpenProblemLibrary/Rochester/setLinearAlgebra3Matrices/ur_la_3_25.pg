######################################
#  Initialization

DOCUMENT() ;        
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix')->variables->are(x=>'Real',y=>'Real');

$a = non_zero_random(-9,9,1);
$b = non_zero_random(-9,9,1);

$x = Compute("1 - $b");
$y = Compute("$b * (1 - $b)/$a");

$A = Matrix([
['x',$a],
['y',$b],
]);


#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
If \[ A = $A.\]
determine the values of \(x\) and \(y\) for which \(A^2=A\). 
$BR
\(x=\) \{$x->ans_rule(10)\}, 
$BR
\(y=\) \{$y->ans_rule(10)\}. 
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( $x->cmp() );
ANS( $y->cmp() );

;

ENDDOCUMENT();
