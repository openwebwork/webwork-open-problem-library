#  Initialization

DOCUMENT() ;        
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix');

@a = (-10..10);
@perm = shuffle(21);
@a = @a[@perm];

$A = Matrix([
[$a[0],$a[1],$a[2]],
[$a[3],$a[4],$a[5]],
]);

@p = shuffle(6);
@elt = (
" \(a_{11} = $a[0]\)"," \(a_{12} = $a[1]\)"," \(a_{13} = $a[2]\)",
" \(a_{21} = $a[3]\)"," \(a_{22} = $a[4]\)"," \(a_{23} = $a[5]\)",
);
@elt = @elt[@p];

$elements = join(',', @elt);

$answer = $A;


#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write a \( 2 \times 3 \) matrix \(A\) with the following entries:
$elements.
$BR
$BR
\( A =\) \{ $answer->ans_array() \}
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( $answer->cmp() );

;

