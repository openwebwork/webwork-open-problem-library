######################################
#  Initialization

DOCUMENT() ;        
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix');

$a = non_zero_random(-9,9,1);
$b = non_zero_random(-9,9,1);
$c = non_zero_random(-9,9,1);
$d = non_zero_random(2,4,1);
$e = non_zero_random(-4,-2,1);

$A = Matrix([[$a,$b,$c],[$a,$b,$c+$e],[$d*$a,$d*$b,$d*$c+$e]])->reduce();

$answer = Compute("2");


#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the rank of the matrix \( A = $A \).
$BR
$BR
\( \text{rank}(A) =\) \{ $answer->ans_rule(5) \}
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( $answer->cmp() );

COMMENT('Rank is always 2.');

ENDDOCUMENT();
