DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

############

TEXT(beginproblem());

Context('Matrix');

$a[1][1] = random(2,5,1) * random(-1,1,2);
$a[1][2] = random(-1,1,2);
$a[1][3] = random(-5,5,1);

$a[2][1] = random(2,3,1);
$a[2][2] = random(-12,12,$a[2][1]);
$a[2][3] = non_zero_random(-12,12,$a[2][1]);

foreach $j (1..3) { 
	$b[1][$j] = $a[2][$j]; 
	$b[2][$j] = $a[1][$j];
	$c[1][$j] = $b[1][$j]/$b[1][1];
	$c[2][$j] = $b[2][$j];
	$d[1][$j] = $c[1][$j];
	$d[2][$j] = $c[2][$j] - $c[2][1]*$c[1][$j]; 
} 

$A = Matrix([
[$a[1][1],$a[1][2],$a[1][3]],
[$a[2][1],$a[2][2],$a[2][3]],
]);

$B = Matrix([
[$b[1][1],$b[1][2],$b[1][3]],
[$b[2][1],$b[2][2],$b[2][3]],
]);

$C = Matrix([
[$c[1][1],$c[1][2],$c[1][3]],
[$c[2][1],$c[2][2],$c[2][3]],
]);

$D = Matrix([
[$d[1][1],$d[1][2],$d[1][3]],
[$d[2][1],$d[2][2],$d[2][3]],
]);

$k = - $a[1][1];


Context()->texStrings;
BEGIN_TEXT
Let \[ A= $A.\]
Perform the following row operations sequentially (applying each new operation to the previous result).
$BR
$BR
First, swap the first and second rows:
$BR
\{ $B->ans_array() \} 
$BR
$BR
Second, multiply every element of the first row by \( \displaystyle \frac{1}{$a[2][1]}\):
$BR
\{ $C->ans_array() \} 
$BR
$BR
Third: add to the elements of the second row, \( $k \) times the corresponding elements of the first row:
$BR
\{ $D->ans_array()  \} 
END_TEXT
Context()->normalStrings;


ANS( $B->cmp() );
ANS( $C->cmp() );
ANS( $D->cmp() );

;

ENDDOCUMENT();
