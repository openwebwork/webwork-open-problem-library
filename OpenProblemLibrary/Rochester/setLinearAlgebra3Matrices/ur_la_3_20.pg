######################################
#  Initialization

DOCUMENT() ;        
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix');

$A = Matrix([
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
]);

$A1 = $A->column(1);
$A2 = $A->column(2);
$A3 = $A->column(3);

$answer = $A;


#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find a matrix \( A \) such that
\[
A
\left\lbrack
\begin{array}{r}
1 \\ 0 \\ 0
\end{array}
\right\rbrack
=
$A1, 
\ \ \ \ 
A
\left\lbrack
\begin{array}{r}
0 \\ 1 \\ 0
\end{array}
\right\rbrack
=
$A2, 
\ \ \ \ 
A
\left\lbrack
\begin{array}{r}
0 \\ 0 \\ 1
\end{array}
\right\rbrack
=
$A3.
\]
$BR
$BR
$BCENTER
\( A =\) \{ $answer->ans_array() \}
$ECENTER
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( $answer->cmp() );

;

