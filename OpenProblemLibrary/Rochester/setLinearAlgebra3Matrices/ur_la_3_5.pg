######################################
#  Initialization

DOCUMENT() ;        
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserVectorUtils.pl",
"PGcourse.pl"
) ;
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix');

$m = random(2,4,1);
$n = random(2,4,1);
$p = random(2,4,1);
$a1 = 1;
$b1 = non_zero_random(-3,3,1);
$c1 = non_zero_random(-6,6,1);
$d1 = non_zero_random(-6,6,1);
$a2 = $m;
$b2 = 1+$m*$b1;
$c2 = non_zero_random(-6,6,1);
$d2 = non_zero_random(-6,6,1);
$a3 = -$n;
$b3 = (-$p)-$n*$b1;
$c3 = non_zero_random(-6,6,1);
$d3 = non_zero_random(-6,6,1);


$ansa1 = 1;
$ansb1 = $b1;
$ansc1 = $c1;
$ansd1 = $d1;
$ansa2 = 0;
$ansb2 = 1;
$ansc2 = (-$m)*$c1+$c2; 
$ansd2 = (-$m)*$d1+$d2;
$ansa3 = 0;
$ansb3 = 0;
$ansc3 = ($p*(-$m)+$n)*$c1+$p*$c2+$c3;
$ansd3 = ($p*(-$m)+$n)*$d1+$p*$d2+$d3;


$answer = Matrix([
[$ansa1,$ansb1,$ansc1,$ansd1],
[$ansa2,$ansb2,$ansc2,$ansd2],
[$ansa3,$ansb3,$ansc3,$ansd3],
]);


#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Given the augmented matrix
\[
A = 
\left\lbrack
\begin{array}{rrr|r}
$a1 & $b1 & $c1 & $d1 \\
$a2 & $b2 & $c2 & $d2 \\
$a3 & $b3 & $c3 & $d3 
\end{array}
\right\rbrack,
\]
perform each row operation in the order specified and enter the final result.
$BR
$BR
First: \( R_2 - $m R_1 \to R_2 \), $BR
Second: \(  R_3 + $n R_1 \to R_3 \), $BR
Third: \(  R_3 + $p R_2 \to R_3 \).
$BR
$BR
$BCENTER
\{ $answer->ans_array() \}
$ECENTER
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( $answer->cmp() );

COMMENT('MathObject version');

ENDDOCUMENT();
