DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

############

TEXT(beginproblem());

Context('Matrix');

$a = random(-5,5,1);
$b = random(-5,5,1);

$k = non_zero_random(-4,4,2);
$l = random(-3,3,2);
$m = random(-3,3,2);
$n = non_zero_random(-3,3,2);

$a13 = $k*$a + $l*$b;

$a23 = $m*$a + $n*$b;

$A = Matrix([
[$k, $l, $a13], 
[$m, $n, $a23]
]);

# reduced row echelon form of A
$answer = Matrix([
[1,0,$a],
[0,1,$b]
]);


Context()->texStrings;
BEGIN_TEXT
Reduce the matrix \[ A= $A\]
to reduced row-echelon form. 
$BR
$BR
$BCENTER
\{ $answer->ans_array() \} 
$ECENTER
END_TEXT
Context()->normalStrings;


ANS( $answer->cmp() );

;

ENDDOCUMENT();
