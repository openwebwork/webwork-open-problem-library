DOCUMENT() ;        
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserVectorUtils.pl",
"PGcourse.pl"
) ;
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix');

do {

$A = Matrix([
[non_zero_random(-4,4,1),random(-4,4,1),random(-4,4,1)],
[random(-4,4,1),random(-4,4,1),non_zero_random(-4,4,1)],
[random(-4,4,1),non_zero_random(-4,4,1),random(-4,4,1)]
]);

} until ( !($A->is_symmetric) );

$mult3 = random(2,6,1);

$ans2 = $mult3 * ($A->transpose());


#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
If \(A = $A\), then
$BR
$BR
\($mult3 A^{T}=\) \{ $ans2->ans_array() \}
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( $ans2->cmp() );

COMMENT('MathObject version');

