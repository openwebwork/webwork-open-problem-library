$showPartialCorrectAnswers = 1 ;

############

TEXT(beginproblem());

Context('Matrix');

do {

$A = Matrix([
[non_zero_random(-6,6,1),non_zero_random(-6,6,1),non_zero_random(-6,6,1)],
[non_zero_random(-6,6,1),non_zero_random(-6,6,1),non_zero_random(-6,6,1)],
]);

$B = Matrix([
[non_zero_random(-6,6,1),non_zero_random(-6,6,1)],
[non_zero_random(-6,6,1),non_zero_random(-6,6,1)],
[non_zero_random(-6,6,1),non_zero_random(-6,6,1)],
]);

} until ($A != $B->transpose() );

$AB = $A * $B;
$BA = $B * $A;

Context()->texStrings;
BEGIN_TEXT
If \(A = $A\) and \(B = $B\), then 
$BR
$BR
\( $A $B =\) \{ $AB->ans_array() \} and
$BR
$BR
\( $B $A =\) \{ $BA->ans_array() \}.
END_TEXT
Context()->normalStrings;


ANS( $AB->cmp() );
ANS( $BA->cmp() );

;

