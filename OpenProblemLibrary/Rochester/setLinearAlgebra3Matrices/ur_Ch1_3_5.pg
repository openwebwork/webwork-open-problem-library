TEXT(beginproblem());

Context('Matrix');

$A = Matrix([
[non_zero_random(-4,4,1),random(-4,4,1),random(-4,4,1)],
[random(-4,4,1),random(-4,4,1),non_zero_random(-4,4,1)],
[random(-4,4,1),non_zero_random(-4,4,1),random(-4,4,1)]
]);

do {

$B = Matrix([
[non_zero_random(-4,4,1),random(-4,4,1),random(-4,4,1)],
[random(-4,4,1),random(-4,4,1),non_zero_random(-4,4,1)],
[random(-4,4,1),non_zero_random(-4,4,1),random(-4,4,1)]
]);

} until ($B != $A);


$answer = $A + $B;


Context()->texStrings;
BEGIN_TEXT
If \(A = $A\) and \(B = $B\), then
$BR
$BR
\(A + B=\) \{ $answer->ans_array() \} 
END_TEXT
Context()->normalStrings;


ANS( $answer->cmp() );

;

