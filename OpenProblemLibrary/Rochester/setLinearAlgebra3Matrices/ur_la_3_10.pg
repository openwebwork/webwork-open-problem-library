#  Initialization

DOCUMENT() ;        
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix');

$M = Matrix([
[non_zero_random(-6,6,1),non_zero_random(-6,6,1)],
[non_zero_random(-6,6,1),random(-6,6,1)],
])->reduce();

$tr = $M->trace();
$det = $M->det();


#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Let \( M = $M \).  Find \(c_1\) and \(c_2\) such that \( M^2 + c_1 M + c_2 I_2 = 0 \), 
where \(I_2\) is the identity \(2\times 2\) matrix. 
$BR
$BR
\(c_1=\) \{ans_rule(10)\},
$BR 
\(c_2=\) \{ans_rule(10)\}.
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( (-1*$tr)->cmp() );
ANS( $det->cmp() );

;

ENDDOCUMENT();
