######################################
#  Initialization

DOCUMENT() ;        
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix');

$a11 = non_zero_random(-3, 3, 1);
$a12 = random(-3, 3, 1);
$a13 = random(-3, 3, 1);

$rank = random(1, 3, 1);

if ( $rank == 1) { 
	$b = random(-3, 3, 1); 
	$a21 = $b * $a11;
	$a22 = $b * $a12;
	$a23 = $b * $a13;
	$c = non_zero_random(-3, 3, 1);
	$a31 = $c * $a11;
	$a32 = $c * $a12;
	$a33 = $c * $a13;
}

if ( $rank == 2) {
	$a21 = 0;
	$a22 = non_zero_random(-3, 3, 1);
	$a23 = random(-3, 3, 1);
	$b = random(-3, 3, 1);
	$c = random(-3, 3, 1);
	$a31 = $b*$a11 + $c*$a21;
	$a32 = $b*$a12 + $c*$a22;
 	$a33 = $b*$a13 + $c*$a23;
}

if ( $rank == 3) { 
	$a21 = 0;
        $a22 = non_zero_random(-3, 3, 1);
        $a23 = random(-3, 3, 1);
        $b = random(-3, 3, 1);
        $c = random(-3, 3, 1);
        $a31 = $b*$a11 + $c*$a21;
        $a32 = $b*$a12 + $c*$a22;
        $a33 = $b*$a13 + $c*$a23 + 1;
}

$A = Matrix([
[$a11,$a12,$a13],
[$a21,$a22,$a23],
[$a31,$a32,$a33],
]);


$answer = $A**2;


#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
If \[ A = $A,\]
then
$BR
$BR
$BCENTER
\( A^2 =\) \{ $answer->ans_array() \}
$ECENTER
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( $answer->cmp() );

;

ENDDOCUMENT();
