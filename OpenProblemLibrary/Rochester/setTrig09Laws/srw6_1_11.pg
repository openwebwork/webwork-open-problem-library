TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(1,9,1);
$b=$a+1;

BEGIN_TEXT
Convert \(\frac{$a}{$b}\pi \) in radians to degrees:  \{ans_rule(15) \}.
$BR
END_TEXT

$ans1=($a/$b)*180;

ANS(num_cmp($ans1));

