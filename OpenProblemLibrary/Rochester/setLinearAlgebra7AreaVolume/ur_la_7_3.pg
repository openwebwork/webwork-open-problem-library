DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');

$x1 = random(-5,5,1);
$y1 = non_zero_random(-5,5,1);

$a = random(4,9,1);
$b = non_zero_random(-3,3,1);
$c = non_zero_random(-3,3,1);
$d = random(4,9,1);

$x2 = $x1 + $a;
$y2 = $y1 + $b;

$x3 = $x1 + $c;
$y3 = $y1 + $d;

$det = $a*$d - $b*$c;
$ans = Compute("abs($det/2)");

Context()->texStrings;
BEGIN_TEXT
Find the area of the triangle with vertices \( ($x1, $y1) \), \( ($x2, $y2) \), and \( ($x3, $y3) \).
$BR
Area = \{ans_rule(15)\}. 
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
;
ENDDOCUMENT();

