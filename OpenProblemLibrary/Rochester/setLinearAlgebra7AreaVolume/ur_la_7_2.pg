DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');

$v1 = random(-12,12,1);
$v2 = random(-12,12,1);
$u1 = random(-12,12,1);
$u2 = random(-12,12,1);

# exclude orthogonal or linearly dependent: 

while (($v1 * $u2 - $v2 * $u1 == 0) or ($v1 * $u1 - $v2 * $u2 == 0)) { 
$v1 = random(-12,12,1);
$v2 = random(-12,12,1);
$u1 = random(-12,12,1);
$u2 = random(-12,12,1);
}

$det = $v1 * $u2 - $v2 * $u1;

$a1 = random(-5,5,1);
$a2 = non_zero_random(-5,5,1);
$b1 = $a1 + $v1;
$b2 = $a2 + $v2;
$c1 = $a1 + $u1;
$c2 = $a2 + $u2;
$d1 = $a1 + $v1 + $u1;
$d2 = $a2 + $v2 + $u2; 

$ans = Compute("abs($det)");

Context()->texStrings;
BEGIN_TEXT
Find the area of the parallelogram with vertices at \( ($a1, $a2), \) \( ($b1, $b2), \) \( ($c1, $c2), \) and \( ($d1, $d2).\)
$BR
Area = \{ans_rule(15)\}.
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
;
ENDDOCUMENT();
