DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');

$a = random(2,8,1);
$b = random(2,7,1);
if ($a == $b) { $b=$b+1; } 
$c = random(2,8,1);
if (($a == $c) or ($b == $c)) { $c = $c+1; }
if (($a == $c) or ($b == $c)) { $c = $c+1; }

$a2 = $a*$a;
$b2 = $b*$b;
$c2 = $c*$c;

Context()->texStrings;
BEGIN_TEXT
Find the volume of the ellipsoid given by \( \displaystyle \frac{x^2}{$a2} + \frac{y^2}{$b2} + \frac{z^2}{$c2} = 1 \). 
$BR
$BR
Volume = \{ans_rule(10)\}.
END_TEXT

BEGIN_HINT
$HINT The volume of the unit ball \(x^2 + y^2 + z^2 = 1\) is \( \displaystyle \frac{4\pi}{3} \). 
END_HINT
Context()->normalStrings;

ANS(Compute("$a*$b*$c*4/3*pi")->cmp);
;
ENDDOCUMENT();
