DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

do {

foreach $i (1..3) { 
	foreach $j (1..3) { 
		$a[$i][$j] = random(-5,5,1);
	} 
}

$A = Matrix([
[ $a[1][1], $a[1][2], $a[1][3] ],
[ $a[2][1], $a[2][2], $a[2][3] ],
[ $a[3][1], $a[3][2], $a[3][3] ],
]);

$det = $A->det;

} until ($det != 0);

$ans = Compute("abs($det)");

$v1 = $A->column(1);
$v2 = $A->column(2);
$v3 = $A->column(3);

Context()->texStrings;
BEGIN_TEXT
Find the volume of the parallelepiped defined by the vectors 
\[ $v1, $v2, $v3. \]
Volume = \{ ans_rule(20) \}. 
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
COMMENT('MathObject version');
ENDDOCUMENT();

