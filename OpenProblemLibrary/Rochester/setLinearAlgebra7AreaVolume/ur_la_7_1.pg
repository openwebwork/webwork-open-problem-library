DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a1 = random(1,3,1);
$a2 = random(1,3,1);
$a3 = random(1,3,1);
$a4 = random(1,3,1);

$b1 = random(-3,-1,1);
$b2 = random(-3,-1,1);
$b3 = random(1,3,1);
$b4 = random(1,3,1);

$c = $a1*$a1 + $a2*$a2 + $a3*$a3 + $a4*$a4;
$d = $a1*$b1 + $a2*$b2 + $a3*$b3 + $a4*$b4;
$e = $b1*$b1 + $b2*$b2 + $b3*$b3 + $b4*$b4;

$det = $c*$e - $d*$d;

$ans = Compute("sqrt($det)");

$v1 = Matrix([[$a1], [$a2], [$a3], [$a4]]);
$v2 = Matrix([[$b1], [$b2], [$b3], [$b4]]);

Context()->texStrings;
BEGIN_TEXT
Find the area of the parallelogram defined by the vectors 
\[ $v1, $v2. \]
Area = \{ans_rule(20)\}.
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
;
ENDDOCUMENT();

