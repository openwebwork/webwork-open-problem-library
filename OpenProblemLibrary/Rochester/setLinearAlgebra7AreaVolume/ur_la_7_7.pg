DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(1,9,1);
$b = random(1,9,1);
$c = random(-9,-1,1);
$d = random(1,9,1);

$ans = Compute("$a*$d - $b*$c");

$v1 = Matrix([[$a], [$b]]);
$v2 = Matrix([[$c], [$d]]);

Context()->texStrings;
BEGIN_TEXT
Find the area of the parallelogram defined by the vectors 
\[ $v1, $v2. \]
Area = \{ans_rule(15)\}.
END_TEXT
Context()->texStrings;

ANS($ans->cmp);
;
ENDDOCUMENT();

