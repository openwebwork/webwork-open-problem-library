);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(1,4,1);
$b = random(-9,-1,1);
$c = random(5,9,1);
$ans = Compute("$a*$a*$c");

$A = Matrix([[$a, $b], [0, $c]]);

Context()->texStrings;
BEGIN_TEXT
Find the determinant of the linear transformation 
\[ T(M) = $A M \]
from the space \(V\) of upper triangular \(2\times 2\) matrices to \(V\).  
$BR
$BR
\( \det = \) \{ans_rule(10)\}
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
