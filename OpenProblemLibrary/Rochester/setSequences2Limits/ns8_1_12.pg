  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,9,1);
$b = random(1,9,1);
$c = random(1,9,1);
$d = random(1,9,1);

TEXT(EV3(<<'EOT'));
Find the limit of the sequence $BR
\( a_n = \frac{$a n - $b}{$c n + $d} \) $BR
\{ans_rule(20)\}
EOT

$answer = $a/$c ;
ANS(num_cmp($answer));

