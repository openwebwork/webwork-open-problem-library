DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
########################################
# Setup

Context("Numeric");
$showPartialCorrectAnswers = 1;

$n = random(20,80,1);
$remainder = $n % 4;
$ans = Formula("sin(x)");
if ($remainder == 1) {$ans = Formula("cos(x)");}
if ($remainder == 2) {$ans = Formula("-sin(x)");}
if ($remainder == 3) {$ans = Formula("-cos(x)");}

########################################
# Main Text

Context()->texStrings;
BEGIN_TEXT
Find the \($n\)th derivative of \( \sin(x) \) by finding the first few derivatives 
and observing the pattern that occurs. $BR
\( (\sin(x))^{($n)} = \) \{ans_rule(10) \}
END_TEXT
Context()->normalStrings;

########################################
# Answers

ANS($ans->cmp);

########################################

;
