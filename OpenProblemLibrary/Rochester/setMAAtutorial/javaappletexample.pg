                   # calculating in pure Perl!
$b2=  ($a2 / 2)**2;
$b3 = ($a3 / 2)**2;

ANS(num_cmp(  $b1, reltol => 10, format=>'%0.2g'));
ANS(num_cmp(  $b2, reltol => 10, format=>'%0.2g'));
