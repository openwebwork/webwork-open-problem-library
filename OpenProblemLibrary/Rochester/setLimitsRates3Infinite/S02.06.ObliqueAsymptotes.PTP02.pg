DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,8,1);
$b = random(1,8,1);
##P(x)=(x^2-2x + 2)(x-$a)+2x+$b
$b1=-2-$a;
$c1=2*$a+2+2;
$d1=-2*$a+$b;

$p="x^3 ";
if ($b1 != 0)
 {
 $p=$p."? {$b1} x^2 ";
 };
if ($c1 != 0)
 {
 $p=$p."? {$c1} x ";
 };
if ($d1 != 0)
 {
 $p=$p."? {$d1}";
 };

TEXT(EV2(<<EOT));
The oblique or slant asymptote to
$BR 
\[f(x) = \frac{$p}{x^2-2x+2}\]
$BR  
is given by y = \{ ans_rule(40) \}.
$BR  
EOT

$quotient = "x-$a";
ANS(fun_cmp($quotient));

# $remainder = "2*x+$b";
# ANS(fun_cmp($remainder));

ENDDOCUMENT(); 
