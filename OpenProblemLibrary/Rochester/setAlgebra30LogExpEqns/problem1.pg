DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

@choose1 = (2,3,5);
$A = random(0,2,1);

$B = $choose1[$A];
$C = random(2,10,1);
$D = random(2,10,1);
$E = random(2,10,1);
$F = random(2,10,1);

$b1 = $B**3;
$b2 = $B**4;

$ans = (3 * $D + 4*$F) / (3*$C + 4*$E);

BEGIN_TEXT;
Solve for \(x\):

\[ $b1^{$C x - $D} = \left( \frac{1}{$b2} \right)^{$E x - $F} \]
$BR \(x = \) \{ans_rule(20) \}
$BR
END_TEXT

ANS(num_cmp($ans));


ENDDOCUMENT();        # This should be the last executable line in the problem.

