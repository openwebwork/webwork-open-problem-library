DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$A = random(9,9,1);
$B = random(2,9,1);
$C = random(2,5,1);
$D = non_zero_random(-10,10,1);

while (gcd($A,$B) > 1) {$B = random(2,9,1);}

#$ans = ($C**$D)**($B/$A);
$ans = $C**($B*$D/$A);

BEGIN_TEXT;
Solve for \(x\):

\[ \frac{$A}{$B} \log_{$C} x = $D  \]

$BR \(x = \) \{ans_rule(20) \}
$BR
END_TEXT

ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.

