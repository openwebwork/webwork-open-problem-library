#DESCRIPTION
##  Algebra problem:  Systems of equations and inequalities
##ENDDESCRIPTION

##Tagged by ynw2d

## DBsubject(Linear algebra)
## DBchapter(Matrices)
## DBsection(Inverses)
## Institution(Rochester and Hope College)
## Author(Paul Pearson)
## MO(1)
## KEYWORDS('algebra', 'matrix operation', 'matrix')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserPopUp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a=non_zero_random(-3,3,1);
$c=non_zero_random(-3,3,1);
$b=-$c-2+$a*$c;

$pop = PopUp(["Choose","Yes","No"],"Yes");

$A = Matrix([[$a, $b, 1], [-1, 1, -1], [1, $c, 0]]);
$ans = $A->inverse;

Context()->texStrings;
BEGIN_TEXT
Given the matrix
\[ $A \]
$BR
(a) does the inverse of the matrix exist? \{ $pop->menu \}
$BR
(b) if your answer is yes, enter the inverse of the matrix below.
$BR
\{ $ans->ans_array(10) \}
END_TEXT
Context()->normalStrings;

install_problem_grader(~~&std_problem_grader);

ANS($pop->cmp, $ans->cmp);
COMMENT('MathObject version.  Always invertible');

ENDDOCUMENT();        # This should be the last executable line in the problem.

