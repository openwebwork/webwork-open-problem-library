DOCUMENT() ;

loadMacros(
    "PG.pl",
    "PGbasicmacros.pl",
    "PGchoicemacros.pl",
    "PGanswermacros.pl",
    "PGauxiliaryFunctions.pl",
    "PGmatrixmacros.pl",
) ;
############
TEXT(beginproblem()) ;
$Arows = random(3,8,1);
$Acols = random(3,5,1);
$A = new Matrix($Arows,$Acols);
foreach $i (1..$Arows) {
    foreach $j (1..$Acols) {
        $A->assign($i,$j,random(-9,9,1) );
    }
}
$type = random(0,1,1);

if ($type) {
    $Bcols = $Arows;
    $Brows = random(1,8,1);
    $B = new Matrix($Brows,$Bcols);
    foreach $i (1..$Brows) {
        foreach $j (1..$Bcols) {
            $B->assign($i,$j,random(-9,9,1) );
        }
    }
    if ($Brows==$Acols) {$ans1=$Arows."x".$Bcols;}else{$ans1 = "undefined";}
    $ans2 = $Brows."x".$Acols;
}
else {
    $Brows = $Acols;
    $Bcols = random(1,5,1);
    $B = new Matrix($Brows,$Bcols);
    foreach $i (1..$Brows) {
        foreach $j (1..$Bcols) {
            $B->assign($i,$j,random(-9,9,1) );
        }
    }
    if ($Bcols==$Arows){$ans2=$Brows."x".$Acols;}else{$ans2 = "undefined";}
    $ans1 = $Arows."x".$Bcols;
}

$showPartialCorrectAnswers = 0 ;

BEGIN_TEXT

If
\[ A = \{ display_matrix_mm($A)\}\]
\[ B = \{ display_matrix_mm($B)\}\]
$BR 
then the size of \(AB\) is \{ans_rule(10)\}$BR
and the size of \(BA\) is \{ans_rule(10)\}.$BR
$BR
NOTE:  If either of the products is not defined, type UNDEFINED for you answer.
END_TEXT

ANS(str_cmp($ans1));
ANS(str_cmp($ans2));


ENDDOCUMENT() ;

