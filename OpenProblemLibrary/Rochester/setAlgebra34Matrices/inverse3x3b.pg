DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a = random(-9,9,1);
$b = random(-9,9,1);
$c = random(-9,9,1);

$k1 = non_zero_random(-9,9,1);
$k2 = non_zero_random(-9,9,1);

$x = $k1+$k2*$a;
$y = 2*$k1 + $k2*$b;
$z = 3*$k1 + $k2*$c;

BEGIN_TEXT
Given the matrix
\[ \{ display_matrix_mm([[1, 2, 3], [$a, $b, $c], [$x, $y, $z]]) \} \]
$BR
(a) does the inverse of the matrix exist?
$BR
Your answer is (input Yes or No): \{ans_rule(15) \}
$BR
(b) if your answer is Yes, write the inverse here:
$BR
\{ mbox( answer_matrix(3,3,10), "." ) \}
END_TEXT

$ans0 = "No";
$ans1 = " ";
$ans2 = " ";
$ans3 = " ";
$ans4 = " ";
$ans5 = " ";
$ans6 = " ";
$ans7 = " ";
$ans8 = " ";
$ans9 = " ";

ANS(str_cmp($ans0));
ANS(str_cmp($ans1));
ANS(str_cmp($ans2));
ANS(str_cmp($ans3));
ANS(str_cmp($ans4));
ANS(str_cmp($ans5));
ANS(str_cmp($ans6));
ANS(str_cmp($ans7));
ANS(str_cmp($ans8));
ANS(str_cmp($ans9));

COMMENT('Never invertible');

ENDDOCUMENT();        # This should be the last executable line in the problem.
