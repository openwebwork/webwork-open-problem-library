[random(-5,5,1),random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1),random(-5,5,1)],
]);

$B = Matrix([
[random(-5,5,1),random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1),random(-5,5,1)],
]);

$ans = $A + $B;

Context()->texStrings;
BEGIN_TEXT
If
\[ A = $A, \]
\[ B = $B, \]
then \(A + B = \) \{ $ans->ans_array(5) \}
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);

