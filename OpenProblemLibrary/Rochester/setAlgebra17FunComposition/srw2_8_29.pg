DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$b = non_zero_random(-9,9,1);
$c = random(2,9,1);
$d = non_zero_random(-9,9,1);

TEXT(EV2(<<EOT));
Given that \(f(x)=$a x ? {$b}\) and \(g(x)=$c x ? {$d}\), calculate 
$BR
(a) \(f\circ g(x)\)= \{ans_rule(15)\}, 
    its domain is (\{ans_rule(15)\}, \{ans_rule(15)\}) 
$BR  
(b) \(g\circ f(x)\)= \{ans_rule(15)\} ,
    its domain is (\{ans_rule(15)\}, \{ans_rule(15)\}) 
$BR  
(c) \(f\circ f(x)\)= \{ans_rule(15)\},
    its domain is (\{ans_rule(15)\}, \{ans_rule(15)\}) 
$BR  
(d) \(g\circ g(x)\)= \{ans_rule(15)\},
    its domain is (\{ans_rule(15)\}, \{ans_rule(15)\}) 
$BR  
$BBOLD Note: $EBOLD If needed enter \(\infty\) as $BITALIC infinity
$EITALIC and \(-\infty \) as $BITALIC -infinity $EITALIC .
$BR  
EOT

$ans1 = "$a*($c*x + $d)+$b";
$ans2 = "-infinity";
$ans3 = "infinity";
$ans4 = "$c*($a*x + $b)+$d";
$ans5 = "-infinity";
$ans6 = "infinity";
$ans7 = "$a*($a*x + $b)+$b";
$ans8 = "-infinity";
$ans9 = "infinity";
$ans10 = "$c*($c*x + $d)+$d";
$ans11 = '-infinity';
$ans12 = 'infinity';
ANS(fun_cmp($ans1));
ANS(str_cmp($ans2));
ANS(str_cmp($ans3));
ANS(fun_cmp($ans4));
ANS(str_cmp($ans5));
ANS(str_cmp($ans6));
ANS(fun_cmp($ans7));
ANS(str_cmp($ans8));
ANS(str_cmp($ans9));
ANS(fun_cmp($ans10));
ANS(str_cmp($ans11));
ANS(str_cmp($ans12));

ENDDOCUMENT();        # This should be the last executable line in the problem.


