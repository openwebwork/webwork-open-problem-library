TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(10,35,1);


BEGIN_TEXT
In how many ways can 3 students from a class of $a be chosen for a field trip?
$BR
Your answer is : \{ans_rule(20) \}
$BR
END_TEXT

$ans = $a*($a-1)*($a-2)/6;
ANS(num_cmp($ans));

