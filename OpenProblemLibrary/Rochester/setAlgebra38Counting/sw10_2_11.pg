DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(4,9,1);

if ($a == 4){
   $lts = FGHI;
   $ans = 4*3*2;
   };
if ($a == 5){
   $lts = FGHIJ;
   $ans = 5*4*3;
   };
if ($a == 6){
   $lts = FGHIJK;
   $ans = 6*5*4;
   };
if ($a == 7){
   $lts = FGHIJKL;
   $ans = 7*6*5;
   };
if ($a == 8){
   $lts = FGHIJKLM;
   $ans = 8*7*6;
   };
if ($a == 9){
   $lts = FGHIJKLMN;
   $ans = 9*8*7;
   };

BEGIN_TEXT
How many three-letter "words" can be made from $a letters ``$lts''?
(Letters may not be repeated.)
$BR
Your answer is : \{ans_rule(10) \}
$BR
END_TEXT

ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
