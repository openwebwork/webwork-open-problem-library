DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,8,1);

if ($a == 2){
   $ans = 9*8/2;
   };
if ($a == 3){
   $ans = 9*8*7/(2*3);
   };
if ($a == 4){
   $ans = 9*8*7*6/(2*3*4);
   };
if ($a == 5){
   $ans = 9*8*7*6/(2*3*4);
   };
if ($a == 6){
   $ans = 9*8*7/(2*3);
   };
if ($a == 7){
   $ans = 9*8/2;
   };
if ($a == 8){
   $ans = 9;
   };


BEGIN_TEXT
In how many ways can $a books be choosen from a group of nine?
$BR
Your answer is : \{ans_rule(20) \}
$BR
END_TEXT

ANS(num_cmp($ans));

