DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1 ;

TEXT(beginproblem());

Context('Matrix');

$L = Matrix([
[1,0,0],
[non_zero_random(-5,5,1),1,0],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),1],
]);

$D = Matrix([
[non_zero_random(-5,5,1),0,0],
[0,non_zero_random(-5,5,1),0],
[0,0,non_zero_random(-5,5,1)],
]);

$U = Matrix([
[1,non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[0,1,non_zero_random(-5,5,1)],
[0,0,1],
]);

$A = $L * $D * $U;

Context()->texStrings;
BEGIN_TEXT
Find the \(LDU\) factorization of \[ A= $A. \]  That is, write \(A=LDU\) where 
\(L\) is a lower triangular matrix with ones on the diagonal, 
\(D\) is a diagonal matrix, and 
\(U\) is an upper triangular matrix with ones on the diagonal. 
$BR
$BR
$BCENTER
\(L=\)
\{ $L->ans_array() \}
$BR
$BR
\(D=\)
\{ $D->ans_array() \}
$BR
$BR
\(U=\)
\{ $U->ans_array() \}
$ECENTER
END_TEXT
Context()->normalStrings;


ANS( $L->cmp() );
ANS( $D->cmp() );
ANS( $U->cmp() );

;
