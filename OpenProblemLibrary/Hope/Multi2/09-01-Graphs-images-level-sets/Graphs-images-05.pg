##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextInequalities.pl",
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric")->variables->are(t=>'Real');

$px = random(2,9,1);
$py = random(2,9,1);
$pz = random(2,9,1);

$vx = random(2,9,1);
$vy = random(2,9,1);
$vz = random(2,9,1);


$f = Formula("($px + t*$vx, $py + t*$vy, $pz + t*$vz)")->reduce();

$answer[0] = Compute("4");
$answer[1] = Compute("3");

Context("Point")->variables->are(t=>'Real');

$answer[2] = Point("(t, $px + t*$vx, $py + t*$vy, $pz + t*$vz)");

Context("Interval");

$answer[3] = Interval("(-inf,inf)");

Context("Point")->variables->are(t=>'Real');

$answer[4] = Point("($px + t*$vx, $py + t*$vy, $pz + t*$vz)");

Context("Interval");

$answer[5] = Compute("(-inf,inf)");


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Let \( f : \mathbb{R} \to \mathbb{R}^3 \) be defined by
\( f(t) = $f \).  
$BR
$BR
(a) The graph of \( f \) is a subset of \( \mathbb{R}^k \) for \( k = \) \{ ans_rule(5) \}.
$BR
The image of \( f \) is a subset of \( \mathbb{R}^k \) for \( k = \) \{ ans_rule(5) \}.
$BR
$BR
(b) The graph of \( f \) is the set
\( \Big\lbrace \) 
\{ ans_rule(20) \}
\( \,\Big|\, t \in \)
\{ ans_rule(10) \}
\( \Big\rbrace. \)
$BR
$BR
(c) The image of \( f \) is the set
\( \Big\lbrace \) 
\{ ans_rule(20) \}
\( \,\Big|\, t \in \)
\{ ans_rule(10) \}
\( \Big\rbrace. \)
END_TEXT
Context()->normalStrings;


########################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

foreach my $i (0..5) {
  ANS( $answer[$i]->cmp() );
}

COMMENT("MathObject version");

ENDDOCUMENT();
