#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalities.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric")->variables->are(x=>'Real',y=>'Real');

$a = random(2,6,1);
$b = random(2,6,1);
$c = random(7,9,1);
$f = Formula("$c - $a x^2 - $b y^2")->reduce();

$answer[0] = Compute("3");
$answer[1] = Compute("1");

Context("Point")->variables->are(x=>'Real',y=>'Real');

$answer[2] = Point("(x,y,$c - $a x^2 - $b y^2)");

Context("Interval");

$answer[3] = Interval("(-inf,inf)");
$answer[4] = Interval("(-inf,inf)");

Context("Point")->variables->are(z=>'Real');

$answer[5] = Compute("z");

Context("Interval");

$answer[6] = Compute("(-inf,$c]");


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Let \( f : \mathbb{R}^2 \to \mathbb{R} \) be defined by
\( f(x,y) = $f \) and set \( z = f(x,y) \).  
$BR
$BR
(a) The graph of \( f \) is a subset of \( \mathbb{R}^k \) for \( k = \) \{ ans_rule(5) \}.
$BR
The image of \( f \) is a subset of \( \mathbb{R}^k \) for \( k = \) \{ ans_rule(5) \}.
$BR
$BR
(b) The graph of \( f \) is the set
\( \Big\lbrace \) 
\{ ans_rule(20) \}
\( \,\Big|\, (x,y) \in \)
\{ ans_rule(10) \}
\( \times \)
\{ ans_rule(10) \}
\( \Big\rbrace. \)
$BR
$BR
(c) The image of \( f \) is the set
\( \Big\lbrace \) 
\{ ans_rule(20) \}
\( \,\Big|\, z \in \)
\{ ans_rule(10) \}
\( \Big\rbrace. \)
END_TEXT
Context()->normalStrings;


########################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

foreach my $i (0..6) {
  ANS( $answer[$i]->cmp() );
}



