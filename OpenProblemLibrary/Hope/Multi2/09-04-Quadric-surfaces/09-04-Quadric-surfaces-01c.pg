## DESCRIPTION
## Cylinders and quadric surfaces
## ENDDESCRIPTION


## DBsubject(Calculus - multivariable)
## DBchapter(Concepts for multivariable functions)
## DBsection(Quadratic surfaces)
## Date(08/24/2012)
## Institution(Hope College)
## Author(Paul Pearson)
## MLT(Type_and_Intercepts)
## Level(3)
## TitleText1('Multivariable Mathematics')
## AuthorText1('Darin Stephenson')
## EditionText1('Version 3.0')
## Section1('9.4')
## Problem1('1')
## KEYWORDS('quadric','quadrics','quadric surface','quadric surfaces','cylinder','cylinders')


##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserPopUp.pl",
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric")->variables->are(
x=>'Real',
y=>'Real',
z=>'Real',
);

@types = (
"elliptic cylinder",
"hyperbolic cylinder",
"parabolic cylinder",
"elliptic paraboloid",
"hyperbolic paraboloid",
"ellipsoid",
"hyperboloid of one sheet",
"hyperboloid of two sheets",
"elliptic cone"
);

$type = "elliptic cylinder";

$popup = PopUp(["Choose",@types],$type);

$a = random(2,10,1);
$aa = $a * $a;

$i = random(0,1,1);
if ($i == 0) {

  $f = Formula("x^2 + $a z^2")->reduce();
  $xint = Compute("$a,-$a");
  $yint = List("NONE");
  $zint = List("sqrt($a),-sqrt($a)");

} else {

  $f = Formula("y^2 + $a z^2")->reduce();
  $xint = List("NONE");
  $yint = Compute("$a,-$a");
  $zint = List("sqrt($a),-sqrt($a)");

}

$g = Compute("$aa");


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Identify the type of quadric surface defined by the equation
$PAR
\[ 
$f = $g,
\]
$BR
and find all x-, y-, and z-intercepts of the resulting
graph.  Sketch the graph of this quadric surface on paper.
$BR
$BR
The quadric surface is a / an \{ $popup->menu() \} with
$BR
x-intercepts when \( x = \) \{ ans_rule(20) \},
$BR
y-intercepts when \( y = \) \{ ans_rule(20) \}, and
$BR
z-intercepts when \( z = \) \{ ans_rule(20) \}.
$BR
$BR
Enter your answers as comma separated lists, or enter 
${BITALIC}NONE${EITALIC} if there are no intercepts of a particular type.
END_TEXT
Context()->normalStrings;

########################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( $popup->cmp() );
ANS( $xint->cmp() );
ANS( $yint->cmp() );
ANS( $zint->cmp() );

COMMENT("($type)");

ENDDOCUMENT();


