##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric")->variables->are(
x=>'Real',
y=>'Real',
z=>'Real',
);

$a = random(2,9,1);
$a2 = 2 * $a;

do { $b = random(2,9,1); } until ($b != $a);
$b2 = 2 * $b;
$bb = $b * $b;

$d = Formula("-($a^2+$b^2)")->reduce();

$equation1 = Compute("x^2 - $bb y^2 + z^2 + $a2 x - $b2 z");
$equation2 = Compute("$d");

@answer = ();
$answer[0] = Compute("1");
$answer[1] = Compute("x+$a");
$answer[2] = Compute("-$bb");
$answer[3] = Compute("y");
$answer[4] = Compute("1");
$answer[5] = Compute("z-$b");
$answer[6] = Real("0");

######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
By completing the square, put the equation
$PAR
\[
$equation1 = $equation2 
\]
$BR
into the standard form \( a (x-x_0)^2 + b(y-y_0)^2 + c(z-z_0)^2 = d \).
Then, use your answer to sketch a graph of this quadric surface on paper.
$BR
$BR
\{ ans_rule(5) \}
\( \big( \)
\{ ans_rule(10) \}
\( \big)^2 + \)
\{ ans_rule(5) \}
\( \big( \)
\{ ans_rule(10) \}
\( \big)^2 + \)
\{ ans_rule(5) \}
\( \big( \)
\{ ans_rule(10) \}
\( \big)^2 = \)
\{ ans_rule(10) \}
END_TEXT
Context()->normalStrings;

########################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

foreach my $i (0..scalar(@answer)-1) {
  ANS( $answer[$i]->cmp() );
}

ENDDOCUMENT();


