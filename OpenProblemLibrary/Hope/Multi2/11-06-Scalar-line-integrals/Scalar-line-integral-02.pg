#  Initialization

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);


TEXT( beginproblem() );

Context("Vector")->variables->are(t=>'Real');
Context()->flags->set(
reduceConstants => 0,
reduceConstantFunctions => 0,
);

$k = list_random(3,4,5,6,7,9);
$k2 = 2 * $k;

$x = Compute("$k t");
$y = Compute("t^3 / 3");
$z = Compute("sqrt($k2) t^2 / 2");

$t0 = random(-4,-1,1);
$t1 = random(1,5,1);

$r = Vector("< $x, $y, $z >");

$answer = Compute("$k * ($t1-($t0)) + (($t1)^3 - ($t0)^3)/3");

Context()->texStrings;
BEGIN_TEXT
Find the length of the curve \( \boldsymbol{\vec{r}}(t) = 
$r \) for \( $t0 \leq t \leq $t1 \).
$BR
$BR
Arc length = 
\{ ans_rule(40) \}
END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );



ENDDOCUMENT();
