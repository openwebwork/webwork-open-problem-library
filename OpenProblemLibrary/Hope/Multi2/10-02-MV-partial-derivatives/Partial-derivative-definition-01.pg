##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserDifferenceQuotient.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#############################
#  Setup

Context("Numeric")->variables->are(
x=>'Real',
y=>'Real',
);

# construct the function
$a = random(2,9,1);
do { $b = random(2,9,1); } until ($b != $a);

$f = Formula("$a x^2 - $b y^2");
$fx = $f->D('x');
$fy = $f->D('y');

$fxh = DifferenceQuotient("2*$a*x + $a*h","h");
$fyh = DifferenceQuotient("-2*$b*y - $b*h","h");

######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the indicated partial derivatives of \( f(x,y) = $f \) 
using the limit definition.  The limits need to be reduced 
as much as possible before they are evaluated.
$BR
$BR
\( \displaystyle
f_x(x,y)
=
\lim_{h \to 0} \frac{f(x+h,y)-f(x,y)}{h} 
=
\lim_{h \to 0}
\Bigg(
\)
\{ ans_rule(30) \}
\( \Bigg) = \)
\{ ans_rule(20) \}.
$BR
$BR
\( \displaystyle
f_y(x,y)
=
\lim_{h \to 0} \frac{f(x,y+h)-f(x,y)}{h} 
=
\lim_{h \to 0}
\Bigg(
\)
\{ ans_rule(30) \}
\( \Bigg) = \)
\{ ans_rule(20) \}.
END_TEXT
Context()->normalStrings;

########################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $fxh->cmp() );
ANS( $fx ->cmp() );

ANS( $fyh->cmp() );
ANS( $fy ->cmp() );


COMMENT("Uses parserDifferenceQuotient.pl to require students to simplify their difference quotients.");

ENDDOCUMENT();
