# DESCRIPTION
# One-sided limit
# ENDDESCRIPTION


## Author('Paul Pearson');
## DBsubject(Calculus - single variable)
## DBchapter(Limits and Continuity)
## DBsection(Rules of limits - basic)
## Institution(Hope College)
## TitleText1('Thomas Calculus Early Transcendentals')
## AuthorText1('Thomas, Weir, Hass')
## EditionText1('12')
## Section1('2.4')
## Problem1('11')
## KEYWORDS('one-sided limit')



################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
);

TEXT(beginproblem());


################################
#  Setup

Context("Numeric");
Context()->flags->set(
  reduceConstants => 0,
  reduceConstantFunctions => 0,
);

$a = random(1,9,1);
do { $b = random(1,9,1); } until ($b != $a);

$a1 = $a + 0.5;
$b1 = $b + 0.5;

$answer = Compute("sqrt( $a1 / $b1 )");


################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the following limit without using a calculator.  Enter ${BITALIC}DNE${EITALIC} if the limit does not exist.
$BR
$BR
\( \displaystyle
\lim_{t \to -0.5^{-}} \sqrt{ \frac{t - $a}{t - $b} } = 
\)
\{ ans_rule(20) \}.
END_TEXT
Context()->normalStrings;


#################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

COMMENT('MathObject version.');

ENDDOCUMENT();