################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


################################
#  Setup

Context("Numeric");

$a = random(3,9,1);
do { $b = random(3,9,2); } until ($b != $a);
do { $c = random(3,9,1); } until ($c != $a && $c != $b);

$answer = Compute("2 / $b");


################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the following limit without using a calculator.  Enter ${BITALIC}DNE${EITALIC} if the limit does not exist.
$BR
$BR
\( \displaystyle
\lim_{\theta \to 0} \frac{\theta + \theta \cos($a \theta)}{\sin($b \theta)\cos($c \theta)} = 
\)
\{ ans_rule(20) \}.
END_TEXT
Context()->normalStrings;


#################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );



ENDDOCUMENT();
