# DESCRIPTION
# Trigonometric limit
# ENDDESCRIPTION


## Author('Paul Pearson');
## DBsubject(Calculus - single variable)
## DBchapter(Limits and continuity)
## DBsection(Rules of limits - basic)
## Institution(Hope College)
## MLT(limprodpoly)
## Level(2)
## KEYWORDS('limit','trig limit','trigonometric limit','limit laws','continuity')


################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


################################
#  Setup

Context("Numeric")->variables->are(t=>'Real');
Context()->flags->set(
     reduceConstants => 0,
     reduceConstantFunctions => 0,
   );

$i = random(0,1,1);
@x = ("-pi","pi");
@xtex = ("-\pi","\pi");
$a = Compute("$x[$i]");

$b = random(4,9,1);

$f = Formula("sqrt(t+$b) cos(t + pi)");

$answer = Compute("sqrt($a + $b)");

Context()->functions->disable("Trig");

################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the following limit without using a calculator.
$BR
$BR
\( \displaystyle
\lim_{t \to $xtex[$i]} $f = 
\)
\{ ans_rule(20) \}.
END_TEXT
Context()->normalStrings;


#################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

COMMENT('Trig functions not allowed in student answers.');

ENDDOCUMENT();
