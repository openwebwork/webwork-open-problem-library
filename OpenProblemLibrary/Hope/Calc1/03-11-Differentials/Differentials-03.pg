# DESCRIPTION
# Differentials
# ENDDESCRIPTION


## Author('Paul Pearson');
## DBsubject(Calculus - single variable)
## DBchapter(Applications of Differentiation)
## DBsection(Linear approximation and differentials)
## Institution(Hope College)
## TitleText1('Thomas Calculus Early Transcendentals')
## AuthorText1('Thomas, Weir, Hass')
## EditionText1('12')
## Section1('3.11')
## Problem1('33')
## KEYWORDS('differentials')


################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"answerHints.pl",
);

TEXT(beginproblem());


################################
#  Setup

Context("Numeric")->variables->add(dx=>'Real');

$a = random(1,9,1);
do { $n = random(2,8,2); } until ($n != $a);

$f = Formula("ln($a + x^$n)");
$fp = $f->D('x');

$answer = Compute("($fp) dx");

$wrong = $fp;


################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
If \( y = $f \), find the differential \( dy \).
Your answer will be in terms of x and dx.
Enter \( dx \) as ${BTT}dx${ETT}.
$BR
$BR
\( dy \) = 
\{ ans_rule(30) \}
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;


#################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() -> withPostFilter(AnswerHints( 
  $wrong => "Don't forget dx",
)) );

COMMENT('MathObject version.');

ENDDOCUMENT();