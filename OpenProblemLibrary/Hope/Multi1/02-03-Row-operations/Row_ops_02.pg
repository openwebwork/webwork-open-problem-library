DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);
$showPartialCorrectAnswers = 0;
TEXT(beginproblem()); 

Context('Matrix');

do {

$A = Matrix([
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
]);

} until (($A->row(1) != $A->row(2)) and ($A->row(1) != $A->row(3)) and ($A->row(2) != $A->row(3)));

$i = random(1,3,1);
if ($i == 1) {
  ($k1,$k2,$k3) = (random(2,9,1),1,1);
  $k = $k1;
} elsif ($i == 2) {
  ($k1,$k2,$k3) = (1,random(2,9,1),1);
  $k = $k2;
} else {
  ($k1,$k2,$k3) = (1,1,random(2,9,1));
  $k = $k3;
}

$answer = Matrix([
$k1*($A->row(1)),
$k2*($A->row(2)),
$k3*($A->row(3)),
]);


Context()->texStrings;
BEGIN_TEXT
Give the result of applying the row operation \( $k R_{$i} \rightarrow R_{$i} \) to the given matrix.
$BR
$BR
\( $A \mathop{\longrightarrow}^{$k R_{$i} \rightarrow R_{$i}} \)
\{ $answer->ans_array \}
END_TEXT
Context()->normalStrings;

install_problem_grader(~~&std_problem_grader);

ANS( $answer->cmp() );



ENDDOCUMENT();
