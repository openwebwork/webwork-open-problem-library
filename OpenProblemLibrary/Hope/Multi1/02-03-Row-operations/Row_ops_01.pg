DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserPopUp.pl",
#"AnswerFormatHelp.pl",
"PGcourse.pl",
);
$showPartialCorrectAnswers = 0;
TEXT(beginproblem()); 

Context('Matrix');

do {

$A = Matrix([
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
]);

} until (($A->row(1) != $A->row(2)) and ($A->row(1) != $A->row(3)) and ($A->row(2) != $A->row(3)));

$i = random(1,3,1);
if ($i == 1) {
  $r1 = 1;
  $r2 = 3;  $s1 = 2;
  $r3 = 2;  $s2 = 3;
} elsif ($i == 2) {
  $r1 = 3;  $s1 = 1;
  $r2 = 2;
  $r3 = 1;  $s2 = 3;
} else {
  $r1 = 2;  $s1 = 1;
  $r2 = 1;  $s2 = 2;
  $r3 = 3;
}

$answer = Matrix([
$A->row($r1),
$A->row($r2),
$A->row($r3),
]);


Context()->texStrings;
BEGIN_TEXT
Give the result of applying the row operation \( R_{$s1} \leftrightarrow R_{$s2} \) to the given matrix.
$BR
$BR
\( $A \mathop{\longrightarrow}^{R_{$s1} \leftrightarrow R_{$s2}} \)
\{ $answer->ans_array \}
END_TEXT
Context()->normalStrings;

install_problem_grader(~~&std_problem_grader);

ANS( $answer->cmp() );

COMMENT('MathObject version.');

ENDDOCUMENT();
