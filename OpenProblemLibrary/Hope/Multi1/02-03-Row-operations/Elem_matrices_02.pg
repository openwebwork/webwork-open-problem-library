DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);
$showPartialCorrectAnswers = 1;
TEXT(beginproblem()); 

Context('Matrix');

do {

$A = Matrix([
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
]);

} until (($A->row(1) != $A->row(2)) and ($A->row(1) != $A->row(3)) and ($A->row(2) != $A->row(3)));

$i = random(1,3,1);
$k = random(2,9,1);

if ($i == 1) {

  $op = "R_{1} \leftrightarrow R_{2}";
  $E = Matrix([[0,1,0],[1,0,0],[0,0,1],]);
  $EA = $E * $A;

} elsif ($i == 2) {

  $op = "R_{1} \leftrightarrow R_{3}";
  $E = Matrix([[0,0,1],[0,1,0],[1,0,0],]);
  $EA = $E * $A;

} else {

  $op = "R_{2} \leftrightarrow R_{3}";
  $E = Matrix([[1,0,0],[0,0,1],[0,1,0],]);
  $EA = $E * $A;

}



Context()->texStrings;
BEGIN_TEXT
Give a \( 3 \times 3 \) elementary matrix \( E \) which will carry out the
row operation \( $op \).
$BR
$BR
\( E = \) \{ $E->ans_array \}
$BR
$BR
Test that \( E \) actually works for carrying out this row operation by 
computing the product \( E A \) for the matrix \[A = $A.\]
$BR
\( EA = \) \{ $EA->ans_array \}
END_TEXT
Context()->normalStrings;

install_problem_grader(~~&std_problem_grader);

ANS( $E->cmp() );
ANS( $EA->cmp() );



ENDDOCUMENT();
