DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "MatrixUnits.pl",
  "VectorListCheckers.pl",
  "PGcourse.pl"
);
install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;
$refreshCachedImages = 1;
TEXT(beginproblem()); 

Context('Matrix');

$n = 4;

do { 

$U = GL4Z();

$A = Matrix([
[1,-1,-3],
[2,-2,-2],
[-1,1,-1], # row 3 = row1 - row 2
[3,-3,-5], # row 4 = row 1 + row 2
]);
$A = $U * $A;

} until (($A->element(3,1) != 0) or ($A->element(3,2) != 0));

$A1 = $A->column(1);
$A2 = $A->column(2);
$A3 = $A->column(3);

$V1 = Vector($A1);
$V2 = Vector($A2);
$V3 = Vector($A3);

$Abasisvects = List($V1,$V3);


Context()->texStrings;
BEGIN_TEXT
Let 
\[ H = \mathrm{span} \left\lbrace $V1, $V2, $V3 \right\rbrace. \]
A basis for the subspace \( H \subseteq \mathbb{R}^{$n} \) is
\( \big\lbrace \) 
\{ ans_rule(40) \} 
\( \big\rbrace \).
\{helpLink('vector')\}
END_TEXT
Context()->normalStrings;

ANS($Abasisvects->cmp(list_checker=>~~&basis_checker_list_of_vectors) );

COMMENT('Answer is a basis with 2 vectors.');
ENDDOCUMENT();
