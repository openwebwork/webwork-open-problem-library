DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "VectorListCheckers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(-3,3,1);
$b = non_zero_random(-3,3,1);
$c = non_zero_random(-2,2,1);
$d = non_zero_random(-3,3,1);

$k = random(-3,3,1);
$l = non_zero_random(-3,3,1);

$a11 = $k*$a;
$a12 = $k*$b;
$a13 = $k*$c;
$a14 = $k*$d;

$a21 = $l*$a;
$a22 = $l*$b;
$a23 = $l*$c;
$a24 = $l*$d;

$nb = - $b;


$A = Matrix([
[$a11, $a12, $a13, $a14], 
[$a21, $a22, $a23, $a24],
]);


$kernel1 = Matrix([[$nb], [$a], [0], [0]]);
$kernel2 = Matrix([[0], [$c], [$nb], [0]]);
$kernel3 = Matrix([[0], [$d], [0], [$nb]]);

$answer = List(Vector($kernel1),Vector($kernel2),Vector($kernel3));


Context()->texStrings;
BEGIN_TEXT
Let \[A=$A.\]
$BR
A basis for the null space of \(A\) is
\(\big\lbrace\) 
\{ $answer->ans_rule(40) \}
\(\big\rbrace.\)
\{helpLink('vector')\}
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp(list_checker=>~~&basis_checker_list_of_vectors) );

COMMENT('Basis always has 3 vectors.');

ENDDOCUMENT();
