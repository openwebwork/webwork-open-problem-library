$BR
\{ $mc->buttons() \}
\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;

ANS( $AX->cmp() );

ANS( $mc->cmp() );

COMMENT('Always an isomorphism.');

ENDDOCUMENT();
