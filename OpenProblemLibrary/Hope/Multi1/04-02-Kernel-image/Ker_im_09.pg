DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "MatrixUnits.pl",
  "VectorListCheckers.pl",
  "parserRadioButtons.pl",
  "unionLists.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

install_problem_grader(~~&std_problem_grader);

Context('Matrix');

do {

foreach my $i (1..3) {
  foreach my $j (1..3) {
    $a[$i][$j] = non_zero_random(-5,5,1);
  }
}

$A = Matrix([
[ $a[1][1], $a[1][2], $a[1][3] ],
[ $a[2][1], $a[2][2], $a[2][3] ],
[ $a[3][1], $a[3][2], $a[3][3] ],
]);

} until ( $A->det != Real(0) );

($m,$n) = $A->dimensions;

$x = non_zero_random(2,4,1);
$y = non_zero_random(5,6,1);
$z = non_zero_random(2,4,1);

$X = Matrix([
[$x],
[$y],
[-1*$z],
]);

$AX = $A * $X;

$mc = RadioButtons(
    [ "injective", "surjective", "an isomorphism", "none of these" ],
    "an isomorphism",
    last =>     [ "injective", "surjective", "an isomorphism", "none of these" ],
#    labels => [ "a", "b", "c", "d" ], 
);

Context()->texStrings;
BEGIN_TEXT
Let \( V \) be a vector space and let \( \vec{v}_1, \vec{v}_2, \vec{v}_3 \in V \).
Suppose \( f : V \to \mathbb{R}^{3} \) is a linear transformation and
\[
f(\vec{v}_1)
=
\left( 
\begin{array}{r}
$a[1][1] \\ 
$a[2][1] \\ 
$a[3][1] 
\end{array}
\right),
\ \ \ 
f(\vec{v}_2)
=
\left( 
\begin{array}{r}
$a[1][2] \\ 
$a[2][2] \\ 
$a[3][2] 
\end{array}
\right),
\ \ \ 
f(\vec{v}_3)
=
\left( 
\begin{array}{r}
$a[1][3] \\ 
$a[2][3] \\ 
$a[3][3] 
\end{array}
\right).
\]

\{ BeginList('OL',type=>'a') \}

$ITEM 
Find \( f( $x \vec{v}_1 + $y \vec{v}_2 - $z \vec{v}_3) \).
$BR
$BR
\( f( $x \vec{v}_1 + $y \vec{v}_2 - $z \vec{v}_3) = \)
\{ $AX->ans_array(10) \}.

$ITEMSEP
$ITEM 
