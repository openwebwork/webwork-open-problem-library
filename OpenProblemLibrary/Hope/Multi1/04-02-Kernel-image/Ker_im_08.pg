DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"MatrixUnits.pl",
"VectorListCheckers.pl",
"parserRadioButtons.pl",
#"PGchoicemacros.pl",
"unionLists.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a1 = non_zero_random(-4,4,1);
$a2 = non_zero_random(-4,4,1);
$a3 = non_zero_random(-4,4,1);

$s = random(-1,1,2) * random(2,5,1);
$t = random(-1,1,2) * random(2,5,1);

$a[1][1] = $s * $a1;
$a[2][1] = $s * $a2;
$a[3][1] = $s * $a3;

$a[1][2] = $t * $a1;
$a[2][2] = $t * $a2;
$a[3][2] = $t * $a3;


$A = Matrix([
[ $a[1][1], $a[1][2] ],
[ $a[2][1], $a[2][2] ],
[ $a[3][1], $a[3][2] ],
]);

($m,$n) = $A->dimensions;

$x = non_zero_random(-4,4,1);
$y = non_zero_random(-4,4,1);

$X = Matrix([
[$x],
[$y]
]);

$AX = $A * $X;

$mc = RadioButtons(
    [ "injective", "surjective", "bijective", "none of these" ],
    "none of these",
    last =>     [ "injective", "surjective", "bijective", "none of these" ],
    labels => [ "injective", "surjective", "bijective", "none of these" ], 
);

Context()->texStrings;
BEGIN_TEXT
Let \( f : \mathbb{R}^{$n} \to \mathbb{R}^{$m} \) be the linear transformation determined by 
\[
f(\vec{e}_1)
=
\left( 
\begin{array}{r}
$a[1][1] \\ 
$a[2][1] \\ 
$a[3][1] 
\end{array}
\right),
\ \ \ \ \
f(\vec{e}_2)
=
\left( 
\begin{array}{r}
$a[1][2] \\ 
$a[2][2] \\ 
$a[3][2] 
\end{array}
\right).
\]

\{ BeginList('OL',type=>'a') \}

$ITEM 
Find 
\( \displaystyle
f
\left( 
\begin{array}{c}
$x \\ $y
\end{array}
\right)
\).
$BR
$BR
\( \displaystyle
f
\left( 
\begin{array}{c}
$x \\ $y
\end{array}
\right)
 =
\) 
\{ $AX->ans_array(10) \}.

$ITEMSEP
$ITEM 
Find the matrix of the linear transformation \( f \).
$BR
$BR
\( \displaystyle
f
\left( 
\begin{array}{c}
x \\ y
\end{array}
\right)
 = \)
\{ $A->ans_array(10) \}
\( \displaystyle 
\left\lbrack
\begin{array}{c}
x \\ y
\end{array}
\right\rbrack.
\)

$ITEMSEP
$ITEM
The linear transformation \( f \) is 
$BR
\{ $mc->buttons() \}
$BR
$BR
You should be able to explain and justify your answer.

\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;

ANS( $AX->cmp() );

ANS( $A->cmp() );

ANS( radio_cmp( $mc->correct_ans() ) );


COMMENT('MathObject version.  Not injective and not surjective.');

ENDDOCUMENT();