##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "contextLimitedVector.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("LimitedVector-coordinate");

($Ax,$Ay,$Az) = ( non_zero_random(-9,9,1), non_zero_random(-9,9,1), non_zero_random(-9,9,1) );
($Bx,$By,$Bz) = ( 0, 0, 0 );

$A = Point($Ax,$Ay,$Az);
$B = Point($Bx,$By,$Bz);
$AB = Vector($Bx - $Ax, $By - $Ay, $Bz - $Az)->reduce;


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the vector in \( \mathbb{R}^3 \) from point 
\( A = $A \) to \( B = $B \).
$BR
$BR
\( \overrightarrow{AB} = \) \{ ans_rule(20) \}
\{ AnswerFormatHelp("vectors") \}
END_TEXT
Context()->normalStrings;


########################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $AB->cmp() );



ENDDOCUMENT();
