#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "AnswerFormatHelp.pl",
  "contextLimitedVector.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("LimitedVector-coordinate")->variables->are(x=>'Real',y=>'Real');
Context()->flags->set( ijk=>0 );

($Ax,$Ay) = (non_zero_random(-9,9,1), non_zero_random(-9,9,1));
$A = Point("($Ax,$Ay)");
$B = Point("(x,y)");
$AB = Vector("<x-$Ax,y-$Ay>");


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the vector in \( \mathbb{R}^2 \) from point 
\( A = $A \) to \( B = $B \).
$BR
$BR
\( \overrightarrow{AB} = \) \{ ans_rule(20) \}
\{ AnswerFormatHelp("vectors") \}
END_TEXT
Context()->normalStrings;


########################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $AB->cmp() );



