#  plot vectors in codomain

$k1 = 2;
$k2 = -1;

$P = Matrix([
[$x1[0],$x1[1]],
[$y1[0],$y1[1]]
]);

$D = Matrix([
[$k1, 0],
[0, $k2]
]);

$A = $P * $D * ($P->inverse);

$a11 = $A->element(1,1); $a12 = $A->element(1,2);
$a21 = $A->element(2,1); $a22 = $A->element(2,2);

@x2 = ();
@y2 = ();
foreach my $i (0..1) {
  $x2[$i] = $a11 * $x1[$i] + $a12 * $y1[$i];
  $y2[$i] = $a21 * $x1[$i] + $a22 * $y1[$i];
}

foreach my $i (0..1) {
