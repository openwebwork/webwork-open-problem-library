  $x1[0] * $y1[1] != $x1[1] * $y1[0]
); # until <x1[0],y1[0]> and <x1[1],y1[1]> are not parallel

$v1 = Vector("<$x1[0],$y1[0]>"); # eigenvector 1
$v2 = Vector("<$x1[1],$y1[1]>"); # eigenvector 2

sub label_pos {
  my $x = shift;
  my $y = shift;
  my $xlab = ($x > 0) ? 'left' : 'right';
  my $ylab = ($y > 0) ? 'top' : 'top';
  return "$xlab,$ylab";
}

foreach my $i (0..1) {
    $gr[0]->moveTo(0,0);
    $gr[0]->arrowTo($x1[$i], $y1[$i],'blue',3);
    my $j = $i + 1;
#    $gr[0]->lb(new Label (1.1*$x1[$i],1.1*$y1[$i], ' v'.$j.' ', 'black', label_pos($x1[$i],$y1[$i]) ));
    $gr[0]->lb(new Label (1.1*$x1[$i],1.1*$y1[$i], ' v'.$j.' ', 'black', 'center', 'middle' ));
}


