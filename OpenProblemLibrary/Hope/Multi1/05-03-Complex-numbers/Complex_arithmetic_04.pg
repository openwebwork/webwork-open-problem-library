## KEYWORDS('Complex', 'Imaginary','algebra', 'complex number')

DOCUMENT();

loadMacros('PGstandard.pl', 'PGML.pl', 'contextLimitedComplex.pl', 'PGcourse.pl');

$showPartialCorrectAnswers = 1;

Context('LimitedComplex-cartesian');

do {
$a1 = non_zero_random(-9,9,1);
$a2 = non_zero_random(-9,9,1);
$b1 = non_zero_random(-9,9,1);
$b2 = non_zero_random(-9,9,1);
} until (($a1 != $a2) and ($b1 != $b2) and ($a1 * $b2 != -1 * $a2 * $b1));

$z1 = $a1 + $b1 * i;
$z2 = $a2 + $b2 * i;

$ans1 = ($a1 * $a2 - $b1 * $b2) + ($a1 * $b2 + $a2 * $b1) * i;
$ans2 = ($a1 * $a2 + $b1 * $b2) + (-1 * $a1 * $b2 + $a2 * $b1) * i;
$ans3 = ($a1 * $a2 - $b1 * $b2) - ($a1 * $b2 + $a2 * $b1) * i;
$ans4 = (($a1)**2 + ($b1)**2) + 0 * i;
$ans5 = sqrt(($a1)**2 + ($b1)**2) + 0 * i;

BEGIN_PGML
Evaluate the following expressions and write them in the form [` a + b i `].
  
[` ([$z1])([$z2]) = `] [_]{$ans1}{20}.
  
[` ([$z1])\overline{([$z2])} = `] [_]{$ans2}{20}.
  
[` \overline{([$z1])([$z2])} = `] [_]{$ans3}{20}.
  
[` ([$z1])\overline{[$z1]} = `] [_]{$ans4}{20}.
  
[` | [$z1] | = `] [_]{$ans5}{20}.
END_PGML


COMMENT('Uses LimitedComplex-cartesian');
ENDDOCUMENT();