DOCUMENT();

loadMacros(
'PGstandard.pl',
'MathObjects.pl',
'contextLimitedComplex.pl',
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('LimitedComplex-cartesian-strict');

do {
$a1 = non_zero_random(-9,9,1);
$a2 = non_zero_random(-9,9,1);
$b1 = non_zero_random(-9,9,1);
$b2 = non_zero_random(-9,9,1);
} until (($a1 != $a2) and ($b1 != $b2));

$z1 = $a1 + $b1 * i;
$z2 = $a2 + $b2 * i;

$ans1 = ($a1 + $a2) + ($b1 + $b2) * i;
$ans2 = ($a1 + $a2) + ($b1 - $b2) * i;

$ans3 = ($a1 - $a2) + ($b1 - $b2) * i;
$ans4 = ($a1 - $a2) + ($b1 + $b2) * i;

$ans5 = ($a1 + $a2) - ($b1 + $b2) * i;

Context()->texStrings;
BEGIN_TEXT
Evaluate the following expressions and write them in the form \( a + b i \).
$BR
$BR
\( ($z1) + ($z2) = \) \{ ans_rule(20) \}.
$BR
$BR
\( ($z1) + \overline{($z2)} = \) \{ ans_rule(20) \}.
$BR
$BR
\( ($z1) - ($z2) = \) \{ans_rule(20)\}.
$BR
$BR
\( ($z1) - \overline{($z2)} = \) \{ans_rule(20)\}.
$BR
$BR
\( \overline{($z1) + ($z2)} = \) \{ ans_rule(20) \}.
END_TEXT
Context()->normalStrings;

ANS($ans1->cmp);
ANS($ans2->cmp);
ANS($ans3->cmp);
ANS($ans4->cmp);
ANS($ans5->cmp);

COMMENT('MathObject version.  Uses LimitedComplex-cartesian-strict.');
ENDDOCUMENT();