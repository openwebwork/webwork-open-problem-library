DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "alignedChoice.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");

$U = non_zero_vector3D();
$V = non_zero_vector3D();
$W = non_zero_vector3D();

##############################################
#  Set up the context

#
#  Don't allow dot-product in student answers
#
$vector = Context()->copy;
$vector->operators->undefine('.');

$u = '\vec{u}'; # Overline('u');
$v = '\vec{v}'; # Overline('v');
$w = '\vec{w}'; # Overline('w');

Context()->constants->add(u => $U, v => $V, w => $W);
Context()->constants->set(u => {TeX => $u}, v => {TeX => $v}, w => {TeX => $w});
Context()->flags->set(reduceConstants => 0);

##############################################
#
#  Create a formula for display and an answer checker for it
#
sub QA {
  my @qa;
  foreach (@_) {
    my $f = Formula($_); push (@qa,"\(".$f->TeX."\)");
    $f = $f->eval; $f->{context} = $vector;
    push (@qa, $f->cmp);
  }
  return @qa;
}

##############################################

$al = new_aligned_list(equals => 1, ans_rule_len => 20);
$al->qa(QA(
  "u . v",
  "u . w",
  "v . w",
  "v . v",
  "u . (v + w)",
));

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Suppose \($u = $U\), \($v = $V\) and \($w = $W\). Then:

$BCENTER
$PAR
\{$al->print_q\}
$ECENTER

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($al->correct_ans);
$showPartialCorrectAnswers = 1;

##################################################



ENDDOCUMENT();
