## DESCRIPTION
##   Find a Perpendicular Vector
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Linear algebra)
## DBchapter(Inner products)
## DBsection(Projection and distance)
## Date(8/23/07)
## Institution(Union College)
## Level(2)
## KEYWORDS('Vector', 'Parallel', 'Perpendicular', 'Plane')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");

#
#  The vector v
#
$V = non_zero_vector3D();
$V->data->[2] = non_zero_random(-5,5,1) if $V->isParallel([1,0,0]);

#
#  A vector parallel to the yz-plane but perpendicular to v
#
$U = $V x [1,0,0];

##############################################
#  Main text

$v = '\vec{v}'; #Overline('v');
$u = '\vec{u}'; Overline('u');

Context()->texStrings;
BEGIN_TEXT

Find a vector \($u\) that is parallel to the \(yz\)-plane and
perpendicular to the vector \($v = $V\).
$PAR

$BBLOCKQUOTE
\($u\) = \{ans_rule(40)\}.
$EBLOCKQUOTE

END_TEXT
Context()->normalStrings;

HINT($BBOLD,"Hint: ",$EBOLD,"Can you find a second vector that",
		   EV2(" must be perpendicular to \($u\)?"));

$showHint = 3;

##################################################
#  Answers

ANS($U->cmp(parallel=>1));
$showPartialCorrectAnswers = 1;

##################################################



ENDDOCUMENT();
