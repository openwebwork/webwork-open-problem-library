DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");

#
#  The vectors
#
$U = non_zero_vector3D();
$V = non_zero_vector3D();

#
#  The projections
#
$U1 = (($U.$V)/($V.$V)) * $V;
$U2 = $U - $U1;

##############################################
#  Main text

$u = '\vec{u}'; # Overline('u');
$v = '\vec{v}'; # Overline('v');

Context()->texStrings;
BEGIN_TEXT

Suppose \($u = $U\) and \($v = $V\).  Then:

\{BeginList()\}
$ITEM
The projection of \($u\) along \($v\) is \{ans_rule(40)\}.
$ITEMSEP

$ITEM
The projection of \($u\) orthogonal to \($v\) is \{ans_rule(40)\}.
\{EndList()\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($U1->cmp);
ANS($U2->cmp);

$showPartialCorrectAnswers = 1;

