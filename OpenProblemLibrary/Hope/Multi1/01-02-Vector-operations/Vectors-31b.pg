TEXT(beginproblem());


#############################
#  Setup

Context("Numeric")->variables->are(x=>'Real',y=>'Real');
Context()->functions->disable("abs","sqrt");

($a, $b) = (random(-5,5,1), non_zero_random(-5,5,1));

$a2 = 2 * $a;
$aa = $a * $a;

$b2 = 2 * $b;
$bb = $b * $b;


$A = Point($a,$b);

$answer = Formula("( (x - $a)^2 + $bb) / ($b2)");


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
