##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "contextLimitedVector.pl",
  "unionLists.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


#############################
#  Setup

Context("Vector");
Context()->flags->set( ijk=>0 );

$A = non_zero_point3D(-5,5,1);
do { $B = non_zero_point3D(-5,5,1); } until ($B != $A);
do { $C = non_zero_point3D(-5,5,1); } until ($C != $A && $C != $B);

$AB = Vector($B - $A);
$AC = Vector($C - $A);
$BC = Vector($C - $B);

$answer = List( norm($AB), norm($AC), norm($BC) );


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the lengths of the three sides of the triangle \( ABC \) 
in \( \mathbb{R}^3 \) if \( A = $A \), \( B = $B \) and \( C = $C \).
Enter your answers as a comma separated list.
$BR
$BR
\{ ans_rule(50) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


########################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );



ENDDOCUMENT();
