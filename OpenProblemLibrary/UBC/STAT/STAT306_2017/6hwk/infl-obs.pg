@out=multreg;
$n=$out[0]; $k=$out[1];
$sse=$out[3]; $residSD=$out[5];
$R2=$out[6]; $R2adj=$out[7];
$b0=$out[8]; $b1=$out[9]; $b2=$out[10];
$seb0=$out[11]; $seb1=$out[12]; $seb2=$out[13];


# get residual vector
$mxres=0;
for($i=0;$i<$n;$i++) 
{ $resid=$y[$i]-$b0-$b1*$x1[$i]-$b2*$x2[$i];
  if(abs($resid)>$mxres) { $mxres=abs($resid); }
}


