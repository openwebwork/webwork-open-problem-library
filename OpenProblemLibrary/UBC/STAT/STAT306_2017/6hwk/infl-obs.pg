$x1str=$x1str . $x1[$n-1] . ")";
$x2str="x2=c(";
for($i=0;$i<$n-1;$i++) { $x2str=$x2str . $x2[$i] . ", " ; }
$x2str=$x2str . $x2[$n-1] . ")";
$ystr="y=c(";
