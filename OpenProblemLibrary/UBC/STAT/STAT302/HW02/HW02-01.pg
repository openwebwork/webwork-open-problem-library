TEXT(beginproblem());

Context("Numeric");

$ver = random(0,2,1);

if($ver==0)
{
$qu = "When tossing a coin twice, the number of events in the sample space is";
$ans = "4";

$fake1="2";
$fake2="3";
$fake3="5";
$fake4="6";

$mc = new_multiple_choice();
$mc->qa(
  $qu,
  $ans
);
$mc->extra(
$fake1, $fake2, $fake3, $fake4
);

$sol = "There are four events in the sample space, which are 
$BR $BR 
{{HH},{HT},{TH},{HH}}.";
}

if($ver==1)
{
$qu = "When tossing a coin three times, the number of events in the sample space is";
$ans = "8";

$fake1="5";
$fake2="6";
$fake3="7";
$fake4="9";

$mc = new_multiple_choice();
$mc->qa(
  $qu,
  $ans
);
$mc->extra(
$fake1, $fake2, $fake3, $fake4
);

$sol = "There are eight events in the sample space, which are 
$BR $BR 
{{HHH},{HHT},{HTH},{THH},{HTT},{THT},{TTH},{TTT}}.";

}

if($ver==2)
{
$qu = "When tossing a coin and rolling a die at the same time, the number of events in the sample space is";
$ans = "12";

$fake1="2";
$fake2="6";
$fake3="24";
$fake4="8";

$mc = new_multiple_choice();
$mc->qa(
  $qu,
  $ans
);
$mc->extra(
$fake1, $fake2, $fake3, $fake4
);

$sol = "There are twelve events in the sample space, which comprises events of the form {d,c}, where d is the die score and c is one of H or T. Hence, the sample space is of the form
$BR $BR 
{{1,H},{2,H},{3,H},{4,H},{5,H},{6,H},{1,T},{2,T},{3,T},{4,T},{5,T},{6,T}}.";

}

