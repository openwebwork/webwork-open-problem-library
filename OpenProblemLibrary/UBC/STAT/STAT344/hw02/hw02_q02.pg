ANS( num_cmp(@q1[0], tol=> 5001) );
ANS( num_cmp(@q2[0], tol=> 5001) );
ANS( num_cmp(@q3[0], tol=> 5001) );
ANS( num_cmp(@q4[0], tol=> 5001) );

