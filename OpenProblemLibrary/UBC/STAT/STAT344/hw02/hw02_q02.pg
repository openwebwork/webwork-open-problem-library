@data=rserve_eval('
set.seed(17) ## see comment below
age <- round(runif(500, 11, 77)) #### 14.2% in 20s
car <- rbinom(500, size=1,prob= 0 + (age>20)*(.2 + .45*(age-20)/60))
');


@N=rserve_eval('
N <- 35.16*10^6
');

@u=rserve_eval('
dmn <- (age>19)&(age<30)
u <- car; u[!dmn] <- 0
');


#######answers_q1
@q1=rserve_eval('
re1<-N*mean(u)
round(re1, 0)
');


#######answers_q2
@q2=rserve_eval('
re2<-N*0.1649/sqrt(500)
round(re2, 0)
');


#######answers_q3
@q3=rserve_eval('
re3<-N*(p/100)*mean(car[dmn])
round(re3, 0)
');


#######answers_q4
@q4=rserve_eval('
re4<-N*(p/100)*sqrt(0.1772*(1-0.1772)/79)
round(re4, 0)
');

