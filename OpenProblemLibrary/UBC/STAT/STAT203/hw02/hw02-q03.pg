$mc1 = new_multiple_choice();
$mc1->qa(
"The Median is roughly...",
"7.2"
);
$mc1->makeLast(
"5","6","7.2","8","11"
);

$mc2 = new_multiple_choice();
$mc2->qa(
"The distribution of birth-weight is ____.",
"skewed right"
);
$mc2->makeLast(
"skewed left","approximately symmetric","skewed right"
);


$mc3 = new_multiple_choice();
$mc3->qa(
"Based on the boxplot, we would expect the mean to be ____ the median:",
"larger than"
);
$mc3->makeLast(
"smaller than","approximately the same","larger than"
);

$mc4 = new_multiple_choice();
$mc4->qa(
"The interquartile range of the data is ____:",
"approx. equal to 4"
);
$mc4->makeLast(
"less than 4","approx. equal to 4","greater than 4", "not enough info to tell"
);


$mc5 = new_multiple_choice();
$mc5->qa(
"The standard deviation would ____:",
"decrease"
);
$mc5->makeLast(
"increase","remain approximately the same","decrease"
);

$mc6 = new_multiple_choice();
$mc6->qa(
"The interquartile range would ____:",
"remain approximately the same"
);
$mc6->makeLast(
"increase","remain approximately the same","decrease"
);
