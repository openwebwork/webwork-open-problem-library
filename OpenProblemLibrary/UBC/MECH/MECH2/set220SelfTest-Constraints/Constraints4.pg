"Moment about x$BR",
"Moment about y$BR",
"Moment about z$BR",
);

BEGIN_TEXT
\{ $mc -> print_q() \}
$PAR 
\{ image( "220Constraints-2-3-4-5.png", height=>214, width=>300 ) \}
$BR
\{ $mc -> print_a() \}

END_TEXT

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );

