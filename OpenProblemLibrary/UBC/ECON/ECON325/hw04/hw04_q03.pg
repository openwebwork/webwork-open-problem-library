###Random number generator seed based on student's login. No need to change.
Context("Numeric");
# warn("Student name: $studentName, login: $studentLogin, id: $studentID");
my $hash = crypt($studentLogin, 'a1');
# warn("crypt: $hash");
@nums = (0..9,'a'..'z','A'..'Z');
my %nums = map { $nums[$_] => $_ } 0..$#nums;
my $seed = 0;
$seed = $seed * 62 + $nums{$_} foreach split(//, substr($hash, -5, 5));
##warn("seed: " . $seed);

####Call R server
rserve_eval("set.seed($seed)"); ## can not combine with the rest

@p0=rserve_eval('
x <-rbinom(n=100, size=4, prob=0.6)
x1 <- x[x==0]
x2 <- x[x==1]
x3 <- x[x==2]
x4 <- 100-length(c(x1, x2, x3))
p0 <- round(length(x1)/100, 2)
');

@p1=rserve_eval('
p1 <- round(length(x2)/100, 2)
');

@p2=rserve_eval('
p2 <- round(length(x3)/100, 2)
');

@p3=rserve_eval('
p3 <- round(x4/100, 2)
');

@y=rserve_eval('
y <- sample(11:15, 1)
');

####answers
@q1=rserve_eval('
me = -3*p0+2*p2+4*p3
');

@esquare=rserve_eval('
esquare = 9*p0+4*p2+16*p3
');

###variance
@q2=rserve_eval('
ss =  esquare-me^2
round(ss, 2)
');

@qb=rserve_eval('
round(sqrt(ss), 2)
');


@q3=rserve_eval('
etwox = -6*p0 + 4*p2 + 8*p3           
');

@q4=rserve_eval('
vtwox = 4*ss
round(sqrt(vtwox), 2)        
');

@q5=rserve_eval('
2*me-3
');

@q6=rserve_eval('
round(vtwox, 2)    
');

@qf=rserve_eval('
round(sqrt(vtwox), 2)
');


@q7=rserve_eval('
9*p0+4*p2+16*p3
');

@q8=rserve_eval('
p0+p1
');

$q1ans=@q1[0]; 
$q2ans=@q2[0]; 
$q3ans=@q3[0]; 
$q4ans=@q4[0]; 
$q5ans=@q5[0]; 
$q6ans=@q6[0]; 
$q7ans=@q7[0]; 
