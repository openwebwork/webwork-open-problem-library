');

#####answers

@qa1 = rserve_eval('
p1+p2+p3+p4
');

@qa2 = rserve_eval('
p5+p6+p7+p8
');

@qb = rserve_eval('
round(p7/(p3+p7), 2)
');

@qc = rserve_eval('
ex=-10*(p1+p5)+20*(p3+p7)+30*(p4+p8)
round(ex, 2)
');

@qd = rserve_eval('
ey=10*(p1+p2+p3+p4)+20*(p5+p6+p7+p8)
round(ey, 2)
');

@exy = rserve_eval('
exy = -200*p5-100*p1+200*p3+300*p4+400*p7+600*p8 
');

@qe = rserve_eval('
qeha=exy-ex*ey
round(qeha, 2)
');



$qa1ans = @qa1[0];
$qa2ans= @qa2[0];
$qbans = @qb[0]; 
$qcans = @qc[0]; 
$qdans = @qd[0]; 
