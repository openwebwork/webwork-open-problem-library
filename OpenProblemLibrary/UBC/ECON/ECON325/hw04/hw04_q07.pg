##warn("seed: " . $seed);

####Call R server
rserve_eval("set.seed($seed)"); ## can not combine with the rest

@p1=rserve_eval('
x <-rnorm(n=100, mean=0, sd=1)
x1 <- x[x>1.2]
x2 <- x[-0.1<x & x<0.1]
x3 <- x[0.1<x & x<0.4]
x4 <- x[0.4<x & x<0.7]
x5 <- x[0.7<x & x<1]
x6 <- x[1<x & x<1.2]
x7 <- x[-0.7<x & x < -0.1]
x8 <- 100 - length(c(x1, x2, x3, x4, x5, x6, x7))
p1 <- round(length(x1)/100, 2)
');

@p2=rserve_eval('
p2 <- round(length(x2)/100, 2)
');

@p3=rserve_eval('
p3 <- round(length(x3)/100, 2)
');

@p4=rserve_eval('
p4 <- round(length(x4)/100, 2)
');

@p5=rserve_eval('
p5 <- round(length(x5)/100, 2)
');

@p6=rserve_eval('
p6 <- round(length(x6)/100, 2)
');

@p7=rserve_eval('
p7 <- round(length(x7)/100, 2)
');

@p8=rserve_eval('
