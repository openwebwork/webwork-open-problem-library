########################################################################

###########################
# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",

"contextFraction.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###########################
# Setup

Context("Fraction");

Context()->variables->add(t => "Real");

do {
  $k1 = random(1,5,1);
  $k2 = random(1,5,1);
  $m1 = random(1,5,1);
  $m2 = random(1,5,1);

  #matrix [[a,b],[c,d]]
  $Ma = Compute("-($k1+$k2)/$m1");
  $Mb = Compute("$k2/$m1");
  $Mc = Compute("$k2/$m2");
  $Md = Compute("- $k2/$m2");

  do {
    $Cf = random(2,10,1);
    $denom = ($Ma*$Md+$Cf*$Cf*$Md-$Mb*$Mc+$Cf*$Cf*$Ma+$Cf*$Cf*$Cf*$Cf);
    # make sure the forcing frequency is not a natural frequency
  } until ($denom != 0);

#make sure the denominators don't became huge
} until ($denom*$m1 < 1000 && $denom*$m2 < 1000);

$Cc = random(2,5,1);

$denom = ($Ma*$Md+$Cf*$Cf*$Md-$Mb*$Mc+$Cf*$Cf*$Ma+$Cf*$Cf*$Cf*$Cf);
$v1 = -($Cc*($Md+$Cf*$Cf))/$denom;
$v2 = ($Cc*$Mc)/$denom;

$answer1 = Compute("$v1*cos($Cf*t)")->reduce;
$answer2 = Compute("$v2*cos($Cf*t)")->reduce;

############################
# Main text

Context()->texStrings;
BEGIN_TEXT
Take the system
\[
{\vec{x}\,}'' =
\begin{bmatrix}
$Ma & $Mb \\ $Mc & $Md
\end{bmatrix}
\vec{x} +
\begin{bmatrix}
$Cc \cos($Cf t) \\ 0
\end{bmatrix}
\]
Find a particular solution of the form \( \begin{bmatrix}x_1(t) \\ x_2(t) \end{bmatrix} = \vec{v} \cos($Cf t) \)
$BR
$BR
\(x_1(t) = {}
\)
\{ ans_rule(40) \}
$BR
$BR
\(x_2(t) = {}
\)
\{ ans_rule(40) \}
$BR
$BR
\{ helpLink("formulas") \}
END_TEXT
Context()->normalStrings;


#############################
##  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer1->cmp() );
ANS( $answer2->cmp() );

#####################
# Solution

#Context()->texStrings;
#BEGIN_SOLUTION
#${PAR}SOLUTION:$PAR
#END_SOLUTION
#Context()->normalStrings;

;

ENDDOCUMENT();
