## EditionText2('2')
## Section2('.')
## Problem2('')
## KEYWORDS('calculus','algebra')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,8,2);
$b = random(2,8,2);
$c = random(2,8,2);
$d = random(2,8,2);
$e = random(2,8,1);

TEXT(EV2(<<EOT));
$PAR
Let \(f(x) = $a x + $b \) and \(g(x) = $c x^2 + $d x \).
$PAR 
Then
$BR
\( (fg)(x) = \) \{ans_rule(30)\}
EOT

$ac=$a*$c;
$adbc=$a*$d+$b*$c;
$bd=$b*$d;
$ans = "${ac}*x^3+${adbc}*x^2+${bd}*x";

ANS(fun_cmp($ans));
ENDDOCUMENT();        # This should be the last executable line in the problem.
