Context("Numeric");
$f = Compute("x^2")->reduce;
$x=non_zero_random(-5, 5);
$y = $f->eval(x=>$x);
$df = $f->D;
$m = $df->eval(x=>$x);
$line = Compute("$m * (x - $x) + $y");
$b = $y - $m * $x;
$xint = -$b / $m;

Context()->texStrings;

BEGIN_TEXT

