DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());

$a=random(2,9,1); 
$b=random(2,9,1); 
$c=random(2,9,1); 

TEXT(EV2(<<EOT));
$BR The equation \[ $a x + $b y + $c =0\] has the \(x\)-intercept 
\{ ans_rule(20) \}
EOT
ANS(num_cmp(-$c/$a));
TEXT(EV2(<<EOT));
and the  \(y\)-intercept \{ ans_rule(20) \}.
EOT
ANS(num_cmp(-$c/$b));
TEXT(EV2(<<EOT));
$BR It defines a straight line of slope 
\{ ans_rule(20) \}
EOT
ANS(num_cmp(-$a/$b));
	


$a=random(2.5,9,1);
$b=random(2.3,9,1); 
$c=random(2.1,9,1); 

TEXT(EV2(<<EOT));
$BR The line defined by the equation \[ $a x + $b y + $c =0 \] has the \(x\)-intercept 
\{ ans_rule(20) \}
EOT
ANS(num_cmp(-$c/$a));
TEXT(EV2(<<EOT));
and the  \(y\)-intercept \{ ans_rule(20) \}.
EOT
ANS(num_cmp(-$c/$b));
TEXT(EV2(<<EOT));
$BR Its slope is
\{ ans_rule(20) \}
EOT
$answer = -$a/$b;
ANS(num_cmp($answer));
	

$a=random(2.2,9,1); 
$b=random(2.4,9,1); 
$c=random(2.6,9,1); 

TEXT(EV2(<<EOT));
$BR The line defined by the equation \[ -$a x + $b y - $c =0 \] has the \(x\)-intercept 
\{ ans_rule(20) \}
EOT
ANS(num_cmp(-$c/$a));
TEXT(EV2(<<EOT));
and the  \(y\)-intercept \{ ans_rule(20) \}.
EOT
ANS(num_cmp($c/$b));
TEXT(EV2(<<EOT));
$BR Its slope is
\{ ans_rule(20) \}
EOT
$answer = $a/$b;
ANS(num_cmp($answer));
	
