TEXT(beginproblem());


$a=random(2,5,1);
$b=random($a+1,9,1);
$apb=$a+$b;
$atb=$a*$b;


TEXT(EV2(<<EOT));
$BR
\(\frac{1}{x^2+$apb x +$atb} +\frac{1}{x+$a}  =( \)  \{ ans_rule(15) \} \()/( \)
EOT
ANS(fun_cmp("x+$b+1", vars=>["x"]));
TEXT(EV2(<<EOT));
 \{ ans_rule(15) \} \( ) \).
EOT
ANS(fun_cmp("(x+$a)*(x+$b)", limits=>[[-5,-1]], vars=>["x"]));

TEXT(EV2(<<EOT));
$BR
\(\frac{1}{x^2+$apb x +$atb}-\frac{1}{x+$a}   =( \)  \{ ans_rule(15) \} \()/( \)
EOT
ANS(fun_cmp("-x-$b+1", vars=>["x"]));
TEXT(EV2(<<EOT));
 \{ ans_rule(15) \} \( ) \).
EOT
ANS(fun_cmp("(x+$a)*(x+$b)", limits=>[[-5,-1]], vars=>["x"]));

TEXT(EV2(<<EOT));
$BR
\(\frac{1}{x^2+$apb x +$atb} \times \frac{1}{x+$a}  =( \)  \{ ans_rule(15) \} \()/( \)
EOT
