loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

install_problem_grader(~~&std_problem_grader);
TEXT(beginproblem());
$showPartialCorrectAnswers = 0;
$showPartialCredit = 0;


$a = random(101,999,2);
$b=random(1,9,1);


TEXT(EV2(<<EOT)); 
Rewrite using scientific notation: $BR
$BR 
\(0.00 $b $a = $b.$a E \)  \{ ans_rule(4) \}.
EOT
ANS(num_cmp(-3, mode=>"strict"));


$a = random(101,999,2);
$b=random(1,9,1);
TEXT(EV2(<<EOT)); 
$BR 
\(0.0000000000 $b $a = $b.$a E \)  \{ ans_rule(4) \}.
EOT
ANS(num_cmp(-11, mode=>"strict"));

$a = random(101,999,2);
$b=random(1,9,1);
TEXT(EV2(<<EOT)); 
$BR 
\( $b $a 00000 = $b.$a E \)  \{ ans_rule(4) \}.
EOT
ANS(num_cmp(8, mode=>"strict"));

$a = random(101,999,2);
$b=random(1,9,1);
TEXT(EV2(<<EOT)); 
$BR 
\( $b $a 000 = $b.$a E \)  \{ ans_rule(4) \}.
EOT
ANS(num_cmp(6, mode=>"strict"));




