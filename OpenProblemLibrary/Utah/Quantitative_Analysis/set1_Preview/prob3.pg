DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$a = random(1,9,1);
$b = random(1,9,1);
$c = random(1,9,1);

BEGIN_TEXT
$BR
Evaluate the expression
$BR \( $a/($b+$c) \) = \{ ans_rule(20) \}.
$BR
(Enter your answer as a decimal number.)
END_TEXT

Context("LimitedNumeric");

$answer = ($a)/($b+$c);
ANS(Compute("$answer")->cmp());

