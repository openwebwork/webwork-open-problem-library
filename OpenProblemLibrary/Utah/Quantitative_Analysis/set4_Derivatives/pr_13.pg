DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
Context("Numeric");
$showPartialCorrectAnswers = 1;

$a = random(3,8);
$b = random(1,30);
$c = random(4,6);

$f = Formula(" ($a x + $b)^{$c} ");
$f1 = Formula(" $a*$c  ($a x + $b)^{$c - 1} ");
$f2 = Formula(" $c*($c-1)*$a*$a  ($a x + $b)^{$c - 2} ");

Context()->texStrings;
BEGIN_TEXT

Let \(f(x)= $f \). $BR$BR
\( f'( x ) = \) \{ans_rule(20) \} $BR$BR
\( f''( x ) = \) \{ans_rule(20) \}

END_TEXT
Context()->normalStrings;

ANS($f1->cmp);
ANS($f2->cmp);

;

