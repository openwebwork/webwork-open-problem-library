$h = random(2,9,1);

BEGIN_TEXT

Let

\[ A=\left(\begin{array}{ccc} 
            $a & $b & $c \cr
	    $d & $e & $f
	   \end{array}\right)
	   ,
B=\left(\begin{array}{ccc} 
            -$a & $g & $c \cr
	    $d & -$e & $h
	   \end{array}\right) \]	   

Then 

\[ A + B=\left(\begin{array}{ccc} 
            a_{11} & a_{12} & a_{13} \cr
	    a_{21} & a_{22} & a_{23} 
	   \end{array}\right) \]

where 
\( a_{11}= \) \{ans_rule(3)\},
\( a_{12}= \) \{ans_rule(3)\},
\( a_{13}= \) \{ans_rule(3)\},
\( a_{21}= \) \{ans_rule(3)\}
\( a_{22}= \) \{ans_rule(3)\},
\( a_{23}= \) \{ans_rule(3)\},

and

\[ A-B=\left(\begin{array}{ccc} 
            c_{11} & c_{12} & c_{13} \cr
	    c_{21} & c_{22} & c_{23}
	   \end{array}\right) \]

where
\( c_{11}= \) \{ans_rule(3)\},
\( c_{12}= \) \{ans_rule(3)\},
\( c_{13}= \) \{ans_rule(3)\},
\( c_{21}= \) \{ans_rule(3)\}
\( c_{22}= \) \{ans_rule(3)\},
\( c_{23}= \) \{ans_rule(3)\}.

END_TEXT

$ans1 = 0 ; 
$ans2 = $b+$g ; 
$ans3 = 2*$c ;
$ans4 = 2*$d ;
$ans5 = 0 ; 
