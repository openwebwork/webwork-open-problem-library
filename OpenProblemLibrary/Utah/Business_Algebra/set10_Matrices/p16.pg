DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

install_problem_grader(~~&std_problem_grader);
TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
$showPartialCredit = 0;


# output the text of the problem

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);
$d = random(2,9,1);
$e = random(2,9,1);
$f = random(2,9,1);
$g = random(2,9,1);

BEGIN_TEXT

Solve:

\[ \left(\begin{array}{cc} 
            $a x & y + $b \cr
	    z- $c & w 
	   \end{array}\right)
	    =
\left(\begin{array}{cc} 
            $d & $e \cr
	    $f & $g 
	   \end{array}\right) \]	   

$BR

\( x= \) \{ans_rule(20)\}

\( y= \) \{ans_rule(20)\} 

\( z= \) \{ans_rule(20)\}

\( w= \) \{ans_rule(20)\}

END_TEXT

$ans1 = $d / $a ; 
$ans2 = $e - $b ; 
$ans3 = $f + $c ;
$ans4 = $g ;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));


ENDDOCUMENT();        # This should be the last executable line in the problem.
