DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl", "PGbasicmacros.pl", "PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

install_problem_grader(~~&std_problem_grader);
TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
$showPartialCredit = 0;

# output the text of the problem

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);
$d = random(2,9,1);
$e = random(2,9,1);
$f = random(2,9,1);
$g = random(2,9,1);

BEGIN_TEXT

Let

\[ A=\left(\begin{array}{cc} 
            $a & $c \cr
	    -$c & $f
	   \end{array}\right), 
B=\left(\begin{array}{cc} 
            $b & -$d \cr
	    $e & $g 
	   \end{array}\right). \]

Then

\[ AB=\left(\begin{array}{cc} 
            a_{11} & a_{12} \cr
	    a_{21} & a_{22} 
	    \end{array}\right) \]

where 
\( a_{11}= \) \{ans_rule(3)\},
\( a_{12}= \) \{ans_rule(3)\},
\( a_{21}= \) \{ans_rule(3)\},
\( a_{22}= \) \{ans_rule(3)\},

\[ BA=\left(\begin{array}{cc} 
            b_{11} & b_{12} \cr
	    b_{21} & b_{22}  
	   \end{array}\right) \]

where 
\( b_{11}= \) \{ans_rule(3)\},
\( b_{12}= \) \{ans_rule(3)\},
\( b_{21}= \) \{ans_rule(3)\},
\( b_{22}= \) \{ans_rule(3)\},

and

\[ A^T B^T=\left(\begin{array}{cc} 
            c_{11} & c_{12} \cr
	    c_{21} & c_{22} 
	   \end{array}\right) \]

where 
\( c_{11}= \) \{ans_rule(3)\},
\( c_{12}= \) \{ans_rule(3)\},
\( c_{21}= \) \{ans_rule(3)\},
\( c_{22}= \) \{ans_rule(3)\}.

END_TEXT

$ans1 = $a*$b+$c*$e ; 
$ans2 = -$a*$d+$c*$g ; 
$ans3 = -$c*$b+$f*$e ;
$ans4 = $c*$d+$f*$g ;
$ans5 = $a*$b+$c*$d ; 
$ans6 = $b*$c-$d*$f ; 
$ans7 = $e*$a-$g*$c ;
$ans8 = $e*$c+$g*$f ;
$ans9 = $a*$b+$c*$d ;
$ans10 = $e*$a-$g*$c ;
$ans11 = $b*$c-$d*$f ;
$ans12 = $e*$c+$g*$f ;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));
ANS(num_cmp($ans5));
ANS(num_cmp($ans6));
ANS(num_cmp($ans7));
ANS(num_cmp($ans8));
ANS(num_cmp($ans9));
ANS(num_cmp($ans10));
ANS(num_cmp($ans11));
ANS(num_cmp($ans12));

ENDDOCUMENT();        # This should be the last executable line in the problem.
