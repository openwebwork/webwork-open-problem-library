# output the text of the problem

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);
$d = random(2,9,1);
$e = random(2,9,1);
$f = random(2,9,1);
$g = random(2,9,1);
$h = random(2,9,1);

BEGIN_TEXT

Let

\[ A=\left(\begin{array}{cc} 
            $a & $b \cr
	    $c & $d
	   \end{array}\right)
	   , 
B=\left(\begin{array}{cc} 
         -$a & $g \cr
	 -$f & $d
	   \end{array}\right)
	   , 
C=\left(\begin{array}{cc} 
            $e & $f \cr
	    $g & $h
	   \end{array}\right). \]
	   	   

Then 

\[ A + B^T=\left(\begin{array}{cc} 
            a_{11} & a_{12} \cr
	    a_{21} & a_{22} 
	   \end{array}\right) \]

where 
\( a_{11}= \) \{ans_rule(3)\},
\( a_{12}= \) \{ans_rule(3)\},
\( a_{21}= \) \{ans_rule(3)\},
\( a_{22}= \) \{ans_rule(3)\},

and

\[ A - B + C^T=\left(\begin{array}{cc} 
            c_{11} & c_{12} \cr
	    c_{21} & c_{22}
	   \end{array}\right) \]

where
\( c_{11}= \) \{ans_rule(3)\},
\( c_{12}= \) \{ans_rule(3)\},
\( c_{21}= \) \{ans_rule(3)\},
\( c_{22}= \) \{ans_rule(3)\}.

END_TEXT

$ans1 = 0 ; 
$ans2 = $b-$f ; 
$ans3 = $c+$g ;
$ans4 = 2*$d ;
$ans5 = 2*$a+$e ; 
$ans6 = $b ; 
$ans7 = $c+2*$f;
$ans8 = $h ;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));
ANS(num_cmp($ans5));
ANS(num_cmp($ans6));
ANS(num_cmp($ans7));
ANS(num_cmp($ans8));


