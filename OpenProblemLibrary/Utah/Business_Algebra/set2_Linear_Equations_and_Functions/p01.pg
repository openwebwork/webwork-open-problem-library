  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


# output the text of the problem

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);

TEXT(EV2(<<EOT));

Solve for \(x\): \($a x + $b = $c \)

$BR

Answer:  \(x\) = \{ans_rule(30)\}

EOT

$ans1 = ($c-$b)/($a);
ANS(num_cmp($ans1));

