  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


# output the text of the problem

$p = random(25,75,1);
$n = random(4,10,1);
$co1 = $n*$p;


TEXT(EV2(<<EOT));

$p$PERCENT or $co1 employees in a company are female. How many are male?

$BR

Answer:   \{ans_rule(30)\}

EOT

$ans1 = (100-$p)*$n;
ANS(num_cmp($ans1));

