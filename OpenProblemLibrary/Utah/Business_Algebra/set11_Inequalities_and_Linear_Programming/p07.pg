DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

install_problem_grader(~~&std_problem_grader);
TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
$showPartialCredit = 0;

# output the text of the problem

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);
$d = random(2,9,1);

BEGIN_TEXT

Let

\[ A=\left(\begin{array}{cc} 
            $a & $b \cr
	    -$c & $d
	   \end{array}\right)\]
Then

\[ A^{-1}=\left(\begin{array}{cc} 
            a_{11} & a_{12} \cr
	    a_{21} & a_{22} 
	    \end{array}\right) \]

where 
\( a_{11}= \) \{ans_rule(10)\},
\( a_{12}= \) \{ans_rule(10)\},
\( a_{21}= \) \{ans_rule(10)\},
\( a_{22}= \) \{ans_rule(10)\}.

END_TEXT

$ans1 = $d/($a*$d+$c*$b) ; 
$ans2 = -$b/($a*$d+$c*$b) ; 
$ans3 = $c/($a*$d+$c*$b) ;
$ans4 = $a/($a*$d+$c*$b) ;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));

