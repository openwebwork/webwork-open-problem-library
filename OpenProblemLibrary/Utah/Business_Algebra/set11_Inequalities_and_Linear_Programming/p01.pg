DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

install_problem_grader(~~&std_problem_grader);
TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
$showPartialCredit = 0;

# output the text of the problem

$a = random(3,5,1);
$b = random(2,4,1);
$c = random(1,4,1);
$d = random(1,4,1);
$e = random(1,4,1);
$co1 = 1+$a;
$co2 = $b-1;
$lcb = "\{";

BEGIN_TEXT

Solve
\[
\begin{array}{rcrcrcr}
   $a x & - & $co1 y & + & 2 z & = & $d  \\ 
      x & - &      y & + &   z & = & $c  \\
   $b x & - & $co2 y &   &     & = & $e
\end{array}
\]

\( x \) = \{ans_rule(10)\},            
\( y \) = \{ans_rule(10)\}, 
\( z \) = \{ans_rule(10)\}.  

END_TEXT

$ans1 = $c+$e-$b*$c+($b-1)*(($a+$b)*$c-$d-$e)/($a+$b-2) ; 
$ans2 = $e-$b*$c+$b*(($a+$b)*$c-$d-$e)/($a+$b-2); 
$ans3 = (($a+$b)*$c-$d-$e)/($a+$b-2) ;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));

ENDDOCUMENT();        # This should be the last executable line in the problem.
