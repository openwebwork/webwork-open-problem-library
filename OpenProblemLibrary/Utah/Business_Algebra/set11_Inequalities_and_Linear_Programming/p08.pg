loadMacros("PG.pl", "PGbasicmacros.pl", "PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

install_problem_grader(~~&std_problem_grader);
TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
$showPartialCredit = 0;

# output the text of the problem

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);
$d = random(2,9,1);

BEGIN_TEXT

Let

\[ A=\left(\begin{array}{ccc} 
            1 &  $a &  0 \cr
	    1 &  $a & $b \cr
	    1 & -$c & $d
	   \end{array}\right)\]
Then

\[ A^{-1}=\left(\begin{array}{ccc} 
            a_{11} & a_{12} & a_{13} \cr
	    a_{21} & a_{22} & a_{23} \cr 
	    a_{31} & a_{32} & a_{33}
	    \end{array}\right) \]

where 
\( a_{11}= \) \{ans_rule(5)\},
\( a_{12}= \) \{ans_rule(5)\},
\( a_{13}= \) \{ans_rule(5)\},
\( a_{21}= \) \{ans_rule(5)\},
\( a_{22}= \) \{ans_rule(5)\},
\( a_{23}= \) \{ans_rule(5)\},
\( a_{31}= \) \{ans_rule(5)\},
\( a_{32}= \) \{ans_rule(5)\},
\( a_{33}= \) \{ans_rule(5)\}.

END_TEXT

$ans1 = ($a*$d+$c*$b)/($a*$b+$b*$c) ; 
$ans2 = -$a*$d/($a*$b+$b*$c) ; 
$ans3 = $a/($a+$c) ;
$ans4 = ($b-$d)/($a*$b+$b*$c) ;
$ans5 = $d/($a*$b+$b*$c) ;
$ans6 = -1/($a+$c) ;
$ans7 = -1/$b ;
$ans8 = 1/$b ;
$ans9 = 0 ;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));
ANS(num_cmp($ans5));
ANS(num_cmp($ans6));
ANS(num_cmp($ans7));
ANS(num_cmp($ans8));
ANS(num_cmp($ans9));

