DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);


#install_problem_grader(~~&std_problem_grader);
TEXT(beginproblem());
#$showPartialCorrectAnswers = 0;
#$showPartialCredit = 0;


$det = 0;
while($det == 0) {
$a11=random(-9,9,1); 
$a12=random(-9,9,1);
$a13=random(-9,9,1);
$a21=random(-9,9,1); 
$a22=random(-9,9,1);
$a23=random(-9,9,1);
$a31=random(-9,9,1); 
$a32=random(-9,9,1);
$a33=random(-9,9,1);
$det=$a11*$a22*$a33-$a11*$a23*$a32-$a12*$a21*$a33+$a12*$a23*$a31+$a13*$a21*$a32-$a13*$a22*$a31;
}





TEXT(EV2(<<EOT)); 

The determinant of the matrix  
\[A = 
\left[\begin{array}{rrr}
$a11 & $a12 & $a13 \\
$a21 & $a22 & $a23  \\
$a31 & $a32 & $a33  \\
\end{array}\right]\]
 
is

\{ ans_rule(10) \}, and its inverse is 
EOT
ANS(num_cmp($det));


TEXT(EV2(<<EOT)); 
\[
A^{-1} = 
\left[\begin{array}{rrr}
b_{11} & b_{12} & b_{13} \\
b_{21} & b_{22} & b_{23} \\
b_{31} & b_{32} & b_{33} \\
\end{array}\right],
\]

where
$BR
\(b_{11} \) =  \{ ans_rule(10) \},

EOT
ANS(num_cmp(($a22*$a33 - $a23*$a32)/$det));

TEXT(EV2(<<EOT)); 
$BR
\(b_{12} \) =  \{ ans_rule(10) \},
EOT
ANS(num_cmp((- $a12*$a33 + $a13*$a32 )/$det));

TEXT(EV2(<<EOT)); 
$BR
\(b_{13} \) =  \{ ans_rule(10) \},
EOT
ANS(num_cmp(($a12*$a23 - $a13*$a22 )/$det));

TEXT(EV2(<<EOT)); 
$BR
\(b_{21} \) =  \{ ans_rule(10) \},
EOT
ANS(num_cmp((- $a21*$a33 + $a23*$a31 )/$det));

TEXT(EV2(<<EOT)); 
$BR
\(b_{22} \) =  \{ ans_rule(10) \},
EOT
ANS(num_cmp(( $a11*$a33 - $a13*$a31 )/$det));

TEXT(EV2(<<EOT)); 
$BR
\(b_{23} \) =  \{ ans_rule(10) \},
EOT
ANS(num_cmp((- $a11*$a23 + $a13*$a21)/$det));

TEXT(EV2(<<EOT)); 
$BR
\(b_{31} \) =  \{ ans_rule(10) \},
EOT
ANS(num_cmp(( $a21*$a32 - $a22*$a31)/$det));

TEXT(EV2(<<EOT)); 
$BR
\(b_{32} \) =  \{ ans_rule(10) \},
EOT
ANS(num_cmp(( - $a11*$a32 + $a12*$a31)/$det));

TEXT(EV2(<<EOT)); 
$BR
\(b_{33} \) =  \{ ans_rule(10) \}. 
EOT
ANS(num_cmp(($a11*$a22 - $a12*$a21 )/$det));






