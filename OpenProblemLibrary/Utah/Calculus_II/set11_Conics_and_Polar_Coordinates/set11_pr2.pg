$showPartialCorrectAnswers = 1;

$a0 = random(3,7,1);
$b0 = $a0+2;

$c0 = $a0*$b0*($b0-1);

$b1 = (2* $b0 + $c0/$b0**2)/3;
$b2 = (2* $b1 + $c0/$b1**2)/3;
$b3 = (2* $b2 + $c0/$b2**2)/3;
$b4 = (2* $b3 + $c0/$b3**2)/3;
$b5 = (2* $b4 + $c0/$b4**2)/3;
$b6 = (2* $b5 + $c0/$b5**2)/3;


TEXT(EV2(<<EOT));

