\[ \sum_{n=1}^{\infty} \sqrt{n} \left[ 1 - \cos\left( \dfrac{1}{n} \right) \right] \]

\{ $mc->print_q() \}
$PAR
\{ $mc->print_a() \}

END_TEXT
