DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,3,1);
$b=random(2,5,1);
$y=$b**$a;

BEGIN_TEXT
Find the exponential function \(f(x)=a^x\) whose graph goes through the
point \( ($a,$y) \).
$BR
\(a=\) \{ans_rule(10) \}.
$BR
END_TEXT

$ans1 = $b;

ANS(num_cmp($ans1));

