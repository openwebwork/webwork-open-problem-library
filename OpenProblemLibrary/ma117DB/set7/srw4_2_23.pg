DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,9,1);
$b=random(2,4,1);
$c=random(2,4,1);
$c1=2**$c;

BEGIN_TEXT
Find \(x\).
$BR
(a) \(\log_$a x = $b\)
$BR
Your answer is \{ans_rule(25) \}
$BR
$BR
(b) \(\log_2 $c1=x\)
$BR
Your answer is \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = $a**$b;
$ans2 = $c;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.
