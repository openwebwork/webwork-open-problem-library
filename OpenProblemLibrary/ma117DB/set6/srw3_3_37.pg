DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-4,-2,1);
$b = -1;
$c = 0;
$d = non_zero_random(1,5,1);
# (x-a)(x-b)(x-c)(x-d)
$b1=-($a+$b+$c+$d);
$c1=$a*$b+$a*$c+$a*$d+$b*$c+$b*$d+$c*$d;
$d1=-($a*$b*$c+$a*$b*$d+$a*$c*$d+$b*$c*$d);
$e1=$a*$b*$c*$d;

$p="P(x)=x^4 ";
if ($b1 != 0)
 {
 $p=$p."? {$b1} x^3 ";
 };
if ($c1 != 0)
 {
 $p=$p."? {$c1} x^2 ";
 };
if ($d1 != 0)
 {
 $p=$p."? {$d1} x ";
 };
if ($e1 != 0)
 {
 $p=$p."? {$e1}";
 };

#\[P(x)=x^4 ? {$b1} x^3 ? {$c1} x^2 ? {$d1} x ? {$e1}\]

TEXT(EV2(<<EOT));
Find all the real zeros of the polynomial 
\[ $p. \]
$BR  
Its real zeros are
\(x_1=\)\{ ans_rule(10) \},
\(x_2=\)\{ ans_rule(10) \},
\(x_3=\)\{ ans_rule(10) \} and
\(x_4=\)\{ ans_rule(10) \} with \(x_1\le x_2\le x_3\le x_4\)
$BR  
$BBOLD 
If the polynomial has only three real zeros, input them at
\(x_1\), \(x_2\) and \(x_3\); 
if the polynomial has only two real zeros, input them at
\(x_1\) and \(x_2\); 
if the polynomial has only one real zero, input it at
\(x_1\). 
$EBOLD
$BR  
EOT

$ans1 = $a;
$ans2 = $b;
$ans3 = $c;
$ans4 = $d;
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));

ENDDOCUMENT();        # This should be the last executable line in the problem.

