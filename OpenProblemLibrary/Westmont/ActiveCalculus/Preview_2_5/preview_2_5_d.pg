## Section1('2.5')
## Problem1('2 5')
## KEYWORDS('derivative', 'composition', 'product rule', 'quotient rule')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserRadioButtons.pl",
  "PGcourse.pl"
);

Context("Numeric");

$m = Formula("e^(tan(x))");
$f = Formula("e^x");
$g=Formula("tan(x)");

$mc = RadioButtons(
    [ 
"A composition \(f(g(x))\) of basic functions",
"A sum \(f(x)+g(x)\) of basic functions",
"A product \(f(x) \cdot g(x)\) of basic functions",
"A quotient \(f(x)/g(x)\) of basic functions"],
"A composition \(f(g(x))\) of basic functions",
    labels => ["A", "B", "C", "D"] );

TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT
Let \(m(x) = $m\). Which of the following best describes its fundamental 
algebraic structure? $BR
\{ $mc->buttons() \}
$BR
where
$BR
 \(f(x) = \) \{ ans_rule(15) \} $BR
\(g(x) = \) \{ ans_rule(15) \}. $BR

$PAR
END_TEXT

Context()->normalStrings;

$showPartialCorrectAnswers = 0;
ANS( $mc->cmp() );
ANS( $f->cmp() );
ANS( $g->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
The function \(m(x)\) is a composition \(f(g(x))\) where the outside function is \(f(x)=$f\) and 
the inside function is \(g(x)=$g\).
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();

