         $label2->font(GD::Font->Giant);
         $graph -> lb($label2);
          $label3=  new Label(3.2 ,2.99  , 'P(5,4)','green',('center','center'));
         $label3->font(GD::Font->Giant);
         $graph -> lb($label3);
         $label4=  new Label(3.4 ,1.7  , 'Q(6,-1)','green',('center','center'));
