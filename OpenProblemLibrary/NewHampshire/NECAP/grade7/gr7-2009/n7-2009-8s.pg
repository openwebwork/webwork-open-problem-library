DOCUMENT();
loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"MathObjects.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Numeric");

$a = random(2,9,1);
$b = random(2,5,1);
if ($b==$a) {$b = $b+1;}
do {$x = random(3,6,1)} until ($b*$x != $a); #otherwise, bx-a = a-bx
$result = $a - $b*$x;

$c = random(2,4,1);
if ($c*$x==$result) {$c=$c+1;} #need d neq 0
$d = $result - $c*$x;

###---Distractors----
$b1 = random(2,4,1);
$a1 = $result - $b1*$x + random(1,3,1);
if ($a1==0) {$a1 = $result - $b1*$x - random(1,3,1);}

$a2 = $a*$b;
if (($x-$a2)==$result) {$a2 = $a2 + random(1,2,1);}

$radio=new_multiple_choice();
$radio->qa("Which expression has the same value as \($a - $b x\) when \(x = $x\)?", "\( $c x ? {$d}\) ");
$radio->extra("\($b x - $a \) ", "\($b1 x ? {$a1} \) ","\(x - $a2 \) ");

Context()->texStrings;
BEGIN_TEXT
\{$radio->print_q()\}
\{$radio->print_a()\}
END_TEXT
Context()->normalStrings;

ANS(radio_cmp($radio->correct_ans()));

BEGIN_SOLUTION
$PAR Solution $PAR
\($a -$b \times  $x = $result\) $BR \($c \times $x ? {$d} = $result\)
END_SOLUTION

ENDDOCUMENT();
