DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "contextLimitedNumeric.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
$x=random(3,9,1);
$y=random(4,8,1);
$z=-random(3,6,1);
$ans1= $x+12;
$ans2=$x+3*$y+$z;
$ans3=($x-12)+3*($y+$z);
$ans4=100*$x+$y*$z;
BEGIN_TEXT
$PAR
Evaluate each of the following expressions if \(x=$x,\) \(y=$y,\) \(z=$z.\)
$PAR
\(x+12=\) \{ans_rule(2)\}
$PAR
\(x+3y+z=\) \{ans_rule(2)\}
$PAR
\((x-12)+3(y+z)=\) \{ans_rule(2)\}
$PAR
\(100x+yz=\) \{ans_rule(2)\}
END_TEXT
Context("LimitedNumeric");
ANS(Real($ans1)->cmp);
ANS(Real($ans2)->cmp);
ANS(Real($ans3)->cmp);
ANS(Real($ans4)->cmp);
BEGIN_SOLUTION
$PAR Solution $PAR
\(x+12=$x+12=$ans1\)$PAR
\(x+3y+z=$x+3\times$y+$z=$ans2\)
$PAR
\((x-12)+3(y+z)=($x-12)+3($y+$z)=$ans3\)
$PAR
\(100x+yz=100\times $x+$y( $z)=$ans4\)
END_SOLUTION	



;
ENDDOCUMENT();


