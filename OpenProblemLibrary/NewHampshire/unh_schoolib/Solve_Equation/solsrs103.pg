DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "contextLeadingZero.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1=random(-14,14,4);
$ans1=random(2,18,2);
$c1=random(2,5,1);
$b1=$c1*$ans1+$a1;
$a2=random(-14,14,4);
$ans2=random(2,18,2);
$c2=random(2,5,1);
$b2=$c2*$ans2+$a2;
$a3=random(-14,14,4);
$ans3=random(2,18,2);
$c3=random(2,5,1);
$b3=$c3*$ans3+$a3;
$bma1= $b1-$a1;
$bma2=$b2-$a2;
BEGIN_TEXT
$PAR
Solve each equation:
$PAR
a) If \(\ $c1 x+$a1=$b1\ \) then  x =\{ans_rule(3)\}

$PAR
b) If \(\ $c2 z+$a2=$b2\ \) then  z =\{ans_rule(3)\}
$PAR
c) If \(\ $c3 s+$a3=$b3\ \) then  s =\{ans_rule(3)\}
END_TEXT
Context("LeadingZero");
ANS(Real($ans1)->cmp);
ANS(Real($ans2)->cmp);
ANS(Real($ans3)->cmp);
BEGIN_SOLUTION
$PAR Solution $PAR
a) \(\ $c1 x+$a1=$b1\) subtract $a1 from both sides to get \($c1 x=$bma1\) then divide both sides by $c1.$PAR
b) \(\ $c2 z+$a2=$b2\) subtract $a2 from both sides to get \($c2 z=$bma2\) then divide both sides by $c2.$PAR
  
END_SOLUTION	


;
ENDDOCUMENT();
