sub gcd
{
my $a=shift;
 my $b=shift;
   if($a<0) {$a=-$a;}
   if($b<0) {$b=-$b;}
   if($b>$a)
      {$c=$a; $a=$b; $b=$c;} #now $a>$b
   $r[0]=$a; $r[1]=$b; my $n=0;
  while($r[$n+1]>0)
     {
     $q[$n+1]=int ($r[$n]/$r[$n+1]);
      $r[$n+2]=$r[$n]-$q[$n+1]*$r[$n+1];
     $n++;
     }
$r[$n];
}
$a1=random(8,12,2);
$b1=random(5,10,1);
$c1=gcd($a1,$b1);
$ans1=$a1*$b1/$c1; 
$a2=random(2,14,6);
$b2=random(6,10,4);
$c2=gcd($a2,$b2);
