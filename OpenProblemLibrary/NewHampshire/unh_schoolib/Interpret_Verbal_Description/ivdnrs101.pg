if($c3==0){$ans3=Compute("$a3*$b3");}
elsif ($c3==2){$ans3=Compute("$a3+$b3");}
elsif ($c3==3){$ans3=Compute("$b3-$a3");}
else {$ans3=Compute("$a3/$b3");}

$a4=random(6,9,1);
