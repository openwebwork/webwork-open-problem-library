## DBsubject(Geometry)
## DBchapter(Shapes)
## DBsection(Surface area)
## Institution(GRPS)
## Author(Louise Wilson)
## Level(3)
## KEYWORDS('volume', 'surface area')
## RESOURCES('volume4.gif')

DOCUMENT();     
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

#define the variables
$r=random(2,5,1);
$h=random(7,15,1);
$s=sqrt($r**2+$h**2);

$area=pi*$r*($r+$s);
$volume=pi*$r**2*$h/3;



TEXT(EV2(<<EOT));
\{image "volume4.gif", height=>240, width=>270 \} $BR $BR
The right cone has radius \( r = $r cm \) and height \( h = $h cm \) . $BR
The volume is \{ans_rule(10) \} \( cm ^3 \) . $BR

The surface area is 
  \{ans_rule(10) \} \( cm ^2 \) . $BR


 $BR

$PAR
EOT

ANS( num_cmp( $volume, reltol=>.1 ) );
ANS( num_cmp( $area, reltol=>.1 ) );


#########################################################>>>
ENDDOCUMENT();
 
