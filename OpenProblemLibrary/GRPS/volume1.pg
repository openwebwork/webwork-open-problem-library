## DBsubject(Geometry)
## DBchapter(Shapes)
## DBsection(Surface area)
## Institution(GRPS)
## Author(Louise Wilson)
## Level(3)
## KEYWORDS('volume', 'surface area')
## RESOURCES('volume1.gif')

DOCUMENT();     
loadMacros(
"PG.pl",
"PGbasicmacros.pl",     
           "PGchoicemacros.pl",     
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl"    
);     

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

#define the variables
$x=random(4,10,1);
$y=random(4,10,1);
$z=random(4,10,1);
$area=2*($x*$y+$x*$z+$y*$z);
$volume=$x*$y*$z;



TEXT(EV2(<<EOT));
\{image "volume1.gif", height=>240, width=>270 \} $BR $BR
The rectangular prism has side lengths \( $x cm, $y cm, $z cm \) . $BR
The volume is \{ans_rule(10) \} \( cm ^3 \) . $BR

The surface area is 
  \{ans_rule(10) \} \( cm ^2 \) . $BR


 $BR

$PAR
EOT

ANS( num_cmp( $volume, reltol=>.1 ) );
ANS( num_cmp( $area, reltol=>.1 ) );


#########################################################>>>
ENDDOCUMENT();
 
