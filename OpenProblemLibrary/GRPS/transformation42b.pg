$graph->lb(new Label($ax-0.2,$ay+0.2,"A ($ax, $ay)",'blue','left','bottom'));
$graph->lb(new Label($bx+0.2,$by-0.2,"B ($bx, $by)",'blue','left','bottom'));
$graph->lb(new Label($cx-0.2,$cy-0.6,"C ($cx, $cy)",'blue','left','bottom'));


plot_functions($graph);

