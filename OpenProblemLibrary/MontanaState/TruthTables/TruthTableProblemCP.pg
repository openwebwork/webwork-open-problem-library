#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextTF.pl",
  "PGcourse.pl"
);

#####################################################################

TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

#####################################################################

Context("TF");


$b = "H \Rightarrow C";

$ansb1 = Compute("T");
$ansb2 = Compute("F");
$ansb3 = Compute("T");
$ansb4 = Compute("T");

$c = "C \Rightarrow H";

$ansc1 = Compute("T");
$ansc2 = Compute("T");
$ansc3 = Compute("F");
$ansc4 = Compute("T");

$d = "\text{not} \;H";

$ansd1 = Compute("F");
$ansd2 = Compute("F");
$ansd3 = Compute("T");
$ansd4 = Compute("T");

$e = "\text{not} \;C";

$anse1 = Compute("F");
$anse2 = Compute("T");
$anse3 = Compute("F");
$anse4 = Compute("T");

$f =  "\text{not} \; C \Rightarrow \text{not} \; H";

$ansf1 = Compute("T");
$ansf2 = Compute("F");
$ansf3 = Compute("T");
$ansf4 = Compute("T");





#####################################################################

Context()->texStrings;
BEGIN_TEXT
Complete the following truth table below by typing "T" for true and "F" for false.


$BCENTER
\{ begintable(6) \}
\{ row( "\(\: H\quad\)", "\(\: C\quad\)", "\($b\)",  "\($e\)", "\($d\)", "\($f\)")\}
\{ row( "$SPACE T", "$SPACE T", ans_rule(3), ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ row( "$SPACE T", "$SPACE F", ans_rule(3), ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ row( "$SPACE F", "$SPACE T", ans_rule(3), ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ row( "$SPACE F", "$SPACE F", ans_rule(3), ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ endtable() \}

$ECENTER

END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ansb1->cmp() );
ANS( $anse1->cmp() );
ANS( $ansd1->cmp() );
ANS( $ansf1->cmp() );
ANS( $ansb2->cmp() );
ANS( $anse2->cmp() );
ANS( $ansd2->cmp() );
ANS( $ansf2->cmp() );
ANS( $ansb3->cmp() );
ANS( $anse3->cmp() );
ANS( $ansd3->cmp() );
ANS( $ansf3->cmp() );
ANS( $ansb4->cmp() );
ANS( $anse4->cmp() );
ANS( $ansd4->cmp() );
ANS( $ansf4->cmp() );



