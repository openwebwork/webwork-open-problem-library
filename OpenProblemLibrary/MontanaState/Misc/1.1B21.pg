############################
# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 1;

$radio1 = new_multiple_choice();
$radio1->qa("True or False?","True");
$radio1->makeLast("False");

$radio2 = new_multiple_choice();
$radio2->qa("True or False?","False");
$radio2->extra("True");
$radio2->makeLast("False");

$a = random(2, 6, 1);
$b = $a*$a;

############################
# Main Text

Context()->texStrings;
BEGIN_TEXT

\{$radio2->print_q()\} $BR 
If \( x < $a\), then \(x^{2} < $b\).
\{$radio2->print_a()\} 

$BR 
\{$radio1->print_q()\} $BR 
If \(x > $a\), then \(x^{2} > $b\).
\{$radio1->print_a()\} 

$BR $BR
\{$radio2->print_q()\} $BR 
If \(x^{2} > $b\), then \(x > $a\).
\{$radio2->print_a()\} 

$BR $BR
\{$radio1->print_q()\} $BR 
If \(x^{2} < $b\), then \(x < $a\).
\{$radio1->print_a()\} 


END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

ANS(radio_cmp($radio2->correct_ans()));
ANS(radio_cmp($radio1->correct_ans()));
ANS(radio_cmp($radio2->correct_ans()));
ANS(radio_cmp($radio1->correct_ans()));


