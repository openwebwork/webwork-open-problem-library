$HR
END_TEXT

Context()->normalStrings;

#####################################################################

Context("ABCD");

$ans1 = Compute("B");
$ans2 = Compute("A");
$ans3 = Compute("C");

ANS($ans1->cmp());
ANS($ans2->cmp());
ANS($ans3->cmp());

