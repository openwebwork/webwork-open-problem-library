#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGunion.pl",
  "PGcourse.pl", 
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());

Context("Numeric");
Context()->variables->are(n =>'Real');
Context()->operators->undefine(",");
Context()->strings->remove("NONE");

$a = random(2,4,1);

$as = Compute("$a-1");

$a2 = Compute("$a+1")->reduce;
$a3 = Compute("$a+2")->reduce;
$a4 = Compute("$a+3")->reduce;

$b1 = Compute("$a2^2");
$b2 = Compute("$a3^2");
$b3 = Compute("$a4^2");
$b4 = Compute("($a+4)^2");

$ans = Compute("(-1)^n(n+$as)/(n+$a)^2")->reduce;
$ans->{test_points} = [[2],[3],[4],[5],[6],[7],[8],[9],[10]];

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find a formula for the general term \(a_n\) of the sequence (starting with \(a_1\)):
\[
\lbrace-\frac{$a}{$b1},\frac{$a2}{$b2},-\frac{$a3}{$b3},\frac{$a4}{$b4}, \ldots\rbrace.
\]
$HR
\(a_n =\) \{ans_rule(20)\} $PAR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
