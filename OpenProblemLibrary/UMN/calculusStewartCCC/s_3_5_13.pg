);
#####################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

#####################################################################

Context("Numeric");
Context()->variables->add(y=>'Real');

$a = random(2,6,1);
$b = random(2,8,1);

$ans = Compute("($a-(e^(x/y)/y))/($b-((x*e^(x/y))/y^2))");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find  \(y'\) by implicit differentiation.
\[
e^{x/y} = $a x - $b y
\]
Answer: \(\displaystyle y' = \) \{ans_rule(30)\} $PAR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS($ans->cmp());

