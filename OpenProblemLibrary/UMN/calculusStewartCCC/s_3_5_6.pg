DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric")->variables->are(
	x => [ 'Real', limits => [.5, 1] ],
	y => [ 'Real', limits => [2, 3] ]
);

do {
	$a = random(2, 7);
	$b = random(1, 7);
	$c = random(1, 7)
} until (
	gcd($a, $b) * gcd($b, $c) == 1
);
$k = non_zero_random(-9, 9);

$p = random(3, 7);
$q = random(2, $p - 1);

$ap = $a * $p;
$pm1 = $p - 1;
$bq = $b * $q;
$qm1 = $q - 1;
$cp = $c * $p;

$F = Compute("$a x^($p) + $b x^($q) y - $c x y^($p)")->reduce;

$Fx = Formula("$ap x^($pm1) + $bq x^($qm1) y - $c y^($p)")->reduce;
$Fy = Formula("$b x^($q) - $cp x y^($pm1)")->reduce;

$dydx = -($Fx/$Fy);

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find  \( \displaystyle \frac{dy}{dx} \) by implicit differentiation,
where
\( $F = $k \).
$BR $BR
\( \displaystyle \frac{dy}{dx} = \) \{ans_rule(45)\}
END_TEXT
Context()->normalStrings;

ANS($dydx->cmp);

$bs = ($b == 1 ? '' : $b);
$cs = ($c == 1 ? '' : $c);
$qm1s = ($q == 2 ? '' : $qm1);

Context()->texStrings;
BEGIN_SOLUTION
Differentiating implicitly with respect to \( x \)
gives
\[
$ap x^{$pm1} + $bq x^{$qm1s} y + $bs x^{$q} \, \frac{dy}{dx}
- $cs y^{$p} - $cp x y^{$pm1} \, \frac{dy}{dx} = 0,
\]
or
\[
($Fy) \, \frac{dy}{dx} = -($Fx).
\]
Hence,
\[
\frac{dy}{dx} = $dydx.
\]
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
