#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

#####################################################################

$showPartialCorrectAnswers = 0;

TEXT(beginproblem());

#####################################################################

Context("Numeric");

$a = random(1,4,1);

if ($a==1){
$b = "3\pi/2";
$f = "\sin";
$an = Compute("3");
}
if ($a==2){
$b = "2\pi";
$f = "\sin";
$an = Compute("4");
}

if ($a==3){
$b = "3\pi/2";
$f = "\cos";
$an = Compute("3");
}
if ($a==4){
$b = "2\pi";
$f = "\cos";
$an = Compute("4");
}

$ans = Compute("$an");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Evaluate the integral \(\displaystyle \int_{0}^{$b} \!\!\!\! |$f x| \, dx.\)
$PAR
Answer: \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

ENDDOCUMENT();        # This should be the last executable line in the problem.
