DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl", 
);
#####################################################################

TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

#####################################################################

$a = random(2,14,2);
$b = random(3,15,2);
$c = random(2,5,1);

$ans1 = Compute("$a+$c*$b");
$ans2 = Compute("$a^2");
$ans3 = Compute("-4*$a/$b");
$ans4 = Compute("DNE");
$ans5 = Compute("0");

#Title("$BITALIC Look Ahead: $EITALIC 2.3 Calculating Limits Using the Limit Laws");

###############################################################
Context()->texStrings;

BEGIN_TEXT
Given that
\[
\displaystyle \lim_{x \to 2} f(x) = $a \qquad \lim_{x \to 2} g(x) = $b \qquad \lim_{x \to 2} h(x) = 0,
\] 
find the following limits.  If a limit $BITALIC does not exist, $EITALIC type "DNE".
$HR
$PAR
$BBOLD 1. $EBOLD \(\displaystyle \lim_{x \to 2} [f(x) + $c g(x)] = \) \{ans_rule(20)\}
$PAR
$BBOLD 2. $EBOLD  \(\displaystyle \lim_{x \to 2} [f(x)]^2 = \) \{ans_rule(20)\}
$PAR
$BBOLD 3. $EBOLD  \(\displaystyle \lim_{x \to 2} \frac{-4 f(x) }{g(x)} = \) \{ans_rule(20)\}
$PAR
$BBOLD 4. $EBOLD  \(\displaystyle \lim_{x \to 2} \frac{f(x) }{h(x)} = \) \{ans_rule(20)\}
$PAR
$BBOLD 5. $EBOLD  \(\displaystyle  \lim_{x \to 2} \frac{h(x) f(x) }{g(x)} = \) \{ans_rule(20)\}
$HR
END_TEXT

Context()->normalStrings;

#####################################################################

ANS( $ans1->cmp );
ANS( $ans2->cmp );
ANS( $ans3->cmp );
ANS( $ans4->cmp );
ANS( $ans5->cmp );

ENDDOCUMENT();        # This should be the last executable line in the problem.