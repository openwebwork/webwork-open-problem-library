Context("Numeric");

$a = random(1,9,1);

$ans = Compute("[e^x*($a+x)-e^x]/[($a+x)^2]");

#####################################################################
Context()->texStrings;
BEGIN_TEXT
Differentiate \(\displaystyle y = \frac{e^x}{$a+x}.\)
$PAR
\(\displaystyle y' = \) \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS($ans->cmp());

COMMENT('Coefficient of x is always 1');

