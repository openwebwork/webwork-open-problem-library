#####################################################################

Context("Numeric");

$a = random(2,8,1);

$ans = Compute("-1/$a^2")->reduce;

###############################################################
Context()->texStrings;

BEGIN_TEXT
Evaluate the limit, if it exists.  If a limit $BITALIC does not exist, $EITALIC type "DNE".
\[
\lim_{x \to -$a} \frac{\displaystyle \frac{1}{$a}+\frac{1}{x}}{$a+x}
\]
$HR
Limit: \{ans_rule(20)\}$BR
END_TEXT

Context()->normalStrings;

#####################################################################

ANS( $ans->cmp );


