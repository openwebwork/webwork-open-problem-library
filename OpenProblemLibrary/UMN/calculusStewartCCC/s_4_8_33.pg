#####################################################################

Context("Numeric");

$a = random(2,10,1);
$b = non_zero_random(-10,10,1);

$c = Compute("($b-$a)/2");

$ans = Compute("2*x^2-x^3+$c*x+$a");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find \(f\) if \(\displaystyle f''(x) = 4-6x,\) \(f(0)=$a,\) and \(f(2)=$b.\) $PAR
Answer: \(f(x) =\) \{ans_rule(40) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

