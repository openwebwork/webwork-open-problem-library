);

#####################################################################

$showPartialCorrectAnswers = 0;

TEXT(beginproblem());

#####################################################################

Context("Numeric");

$a = random(1,2,1);

if ($a==1) {
$f = '\sin';
$ans = Compute("1");
}

if ($a==2) {
$f = '\cos';
$ans = Compute("0");
}

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Evaluate the definite integral
\[
\int_0^{\sqrt{\pi}} \!\!\! x $f (x^2)  \, dx.
\]

Answer: \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

