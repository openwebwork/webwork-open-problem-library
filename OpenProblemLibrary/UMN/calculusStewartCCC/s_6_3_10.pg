#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl", 
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());


Context("Numeric");

$a = random(2,8,2);

$ans = Compute("(4/5)*pi*$a^(5/2)")->reduce;

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Use the method of cylindrical shells to find the volume generated by rotating the region bounded by the curves \(x=\sqrt{y},\) \(x=0,\) and \(y=$a\) about the \(x\)-axis.  
$PAR
Volume = \{ans_rule(20) \}
$PAR
END_TEXT

#####################################################################

ANS(($ans)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.