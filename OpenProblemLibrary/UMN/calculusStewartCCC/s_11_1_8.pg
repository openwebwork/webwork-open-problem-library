DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());


Context("Numeric");

$a = list_random(4,5,6,7);

$ans1 = Compute("$a")->reduce;
$ans2 = Compute("$a/($a+1)")->reduce;
$ans3 = Compute("$ans2/($ans2+1)")->reduce;
$ans4 = Compute("$ans3/($ans3+1)")->reduce;
$ans5 = Compute("$ans4/($ans4+1)")->reduce;

#####################################################################

Context()->texStrings;
BEGIN_TEXT
List the first five terms of the sequence:
\[
a_1 = $a, \quad a_{n+1} = \frac{a_n}{a_n+1}.
\]
$HR
\(a_1 =\) \{ans_rule(10)\}, \(a_2 =\) \{ans_rule(10)\}, \(a_3 =\) \{ans_rule(10)\}, \(a_4 =\) \{ans_rule(10)\}, and \(a_5 =\) \{ans_rule(10)\}
END_TEXT

#####################################################################

ANS(($ans1)->cmp());
ANS(($ans2)->cmp());
ANS(($ans3)->cmp());
ANS(($ans4)->cmp());
ANS(($ans5)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
