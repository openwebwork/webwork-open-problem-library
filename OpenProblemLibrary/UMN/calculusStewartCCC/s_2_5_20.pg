TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

#####################################################################

$a = random(3,7,1);

$b = Compute("1-$a");

$ans = Compute("$a/($a+1)");

###############################################################
Context()->texStrings;

BEGIN_TEXT
Find the following limit.  If the limit goes to \(\infty\), write "inf".  If a limit goes to \(-\infty\), write "-inf". 
\[
\lim_{x \to $a^{-}} \frac{x^2-$a x}{x^2+$b x-$a}
\]
Limit: \{ans_rule(20)\}
END_TEXT

Context()->normalStrings;

#####################################################################

ANS( $ans->cmp );

