);

#####################################################################

$showPartialCorrectAnswers = 0;

TEXT(beginproblem());

#####################################################################

Context("Numeric");

$a = random(2,6,1);

$a2 = Compute("$a^2");

$ans = Compute("pi");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Evaluate
\[ 
\int_{-$a}^{$a}\! \frac{dx}{\sqrt{$a2-x^2}}.
\]
Answer: \{ans_rule(40) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp(tol=>0.01, tolType=>"relative" ) );

