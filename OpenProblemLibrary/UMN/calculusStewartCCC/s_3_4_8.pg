#####################################################################

Context("Numeric");
Context()->variables->set(x=>{limits=>[-1.25,2.25]});

$a = random(10,30,5);
$b = random(2,5,1);

$c = Compute("$a-1");

$ans = Compute("$a*($b x - x^2 )^($c)*($b-2*x)");

#####################################################################
Context()->texStrings;
BEGIN_TEXT
Differentiate \(\displaystyle F(x) = ($b x - x^2)^{$a}.\)
$PAR
Answer: \(\displaystyle F'(x) = \) \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS($ans->cmp());

