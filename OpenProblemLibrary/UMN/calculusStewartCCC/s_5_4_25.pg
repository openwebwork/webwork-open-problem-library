);

#####################################################################

$showPartialCorrectAnswers = 0;

TEXT(beginproblem());

#####################################################################

Context("Numeric");
Context()->variables->add(t =>'Real');

$a = random(1,3,1);
$b = random(4,8,1);
$c = random(10,16,1);
$d = random(20,30,1);

$ans = Compute("$c+$d");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
If \(f($a) = $c,\) \(f'\) is continuous, and \(\displaystyle \int_{$a}^{$b} \! f'(t) \, dt = $d,\) what is the value of \(f($b)?\)
$PAR
Answer: \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

