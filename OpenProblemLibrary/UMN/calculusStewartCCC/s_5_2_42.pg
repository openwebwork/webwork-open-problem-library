loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl", 
);

#####################################################################

$showPartialCorrectAnswers = 0;

TEXT(beginproblem());

#####################################################################

Context("Numeric");

$a = random(5,8,1);
$b = random(10,20,2);
$c = random(3.1,3.9,0.1);

$d = Compute("$a-1");

$ans = Compute("$b-$c");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
If \(\displaystyle \int_1^{$a}\! f(x) \, dx = $b\) and \(\displaystyle \int_{$d}^{$a}\! f(x) \, dx = $c,\) find \(\displaystyle \int_1^{$d}\! f(x) \, dx.\)
$PAR
Answer: \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

