$BCENTER
\{ begintable(12) \}
\{ row( "  \(x\)  ", " \(f(x)\) ")\}
\{ row( "\(-5\)", "\($a\)" )\}
\{ row( "\(-4\)", "\($b\)" )\}
\{ row( "\(-3\)", "\($c\)" )\}
\{ row( "\(-2\)", "\($d\)" )\}
