DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl", 
);

#####################################################################

$showPartialCorrectAnswers = 0;

TEXT(beginproblem());

#####################################################################

Context("Numeric");

$a = random(1,2,1);

if ($a==1){
$b = random(4,10,1);
$f ="e";
$ans = Compute("2*$b*e");
}
else{
$b = random(4,10,1);
$f ="\pi";
$ans = Compute("2*$b*pi");
}

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Evaluate the integral \(\displaystyle \int_{-$b}^{$b} \! $f \, dx.\)
$PAR
Answer: \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

ENDDOCUMENT();        # This should be the last executable line in the problem.