########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

########################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

########################################################################

Context("Numeric");
Context()->variables->are(n=>'Real');
Context()->strings->add(none=>{},EmptySet=>{alias=>"none"});

$a = random(2,8,1);

$lhs = Compute("n/$a");
$rhs = Compute("2*$a/(n-$a)"); 

$ans = List(-$a,2*$a);

########################################################################

Context()->texStrings;
BEGIN_TEXT
Solve the equation
\[ 
$lhs = $rhs.
\]
$PAR
Solutions (separate by commas): \(n =\) \{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

########################################################################

ANS( $ans->cmp() );

ENDDOCUMENT();
