DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

########################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 0;

########################################################################

Context("Numeric");

$a = random(3,6,1);

# Here the equation is -2a x = 2x^2, so 2x^2 +2ax = 0, 2x(x+a)=0

$poly1 = Compute("-2*$a*x") -> reduce;
$poly2 = Compute("2*x^2");

$factors = List(Compute("2x"), Compute("x + $a") );

$roots = List( 0, -$a );

########################################################################

Context()->texStrings;
BEGIN_TEXT
Solve the equation
\[ 
$poly1 = $poly2.
\]
Solutions (separate by commas): \(x =\) \{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

########################################################################

ANS( $roots->cmp() );

ENDDOCUMENT(); 
