########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

########################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

########################################################################

Context("Numeric");

$a = random(3,9,1);
$b = random(3,4,1);

$c = Compute("2*$a");
$d = Compute("4*$a");

Context("LimitedPolynomial");

$ans = Compute("2*x^{$b-2}-4");

########################################################################

Context()->texStrings;
BEGIN_TEXT

Perform the indicated division of a polynomial by a monomial.
\[
\frac{$c x^{$b}-$d x^2}{$a x^2}
\]
Answer: \{ ans_rule(40)\} 
END_TEXT
Context()->normalStrings;

########################################################################

ANS( $ans->cmp );

ENDDOCUMENT();        
