#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());

Context("Numeric");
Context()->variables->are(n =>'Real');
Context()->operators->undefine(",");
Context()->strings->remove("NONE");

$a = random(2,3,1);
$b = random($a+1,5,1);

$a1 = Compute("$a");
$a2 = Compute("$a*$b");
$a3 = Compute("$a*$b^2");
$a4 = Compute("$a*$b^3");

$ans = Compute("$a*$b^(n-1)")->reduce;
$ans->{test_points} = [[2],[3],[4],[5],[6],[7],[8],[9],[10]];

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find a formula for the general term \(a_n\) of the geometric sequence (starting with \(a_1\)):
\[
\lbrace $a1, $a2, $a3, $a4, \ldots\rbrace.
\]
$HR
\(a_n =\) \{ans_rule(20)\} $PAR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
