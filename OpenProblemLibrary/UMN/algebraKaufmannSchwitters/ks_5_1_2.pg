DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


########################################################################

Context("Fraction");

$a = random(2,4,1);
$b = random(2,3,1);

$ans = Compute("1/($b^$a)");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Express the number \($b^{-$a}\) as a reduced fraction.
$PAR
Answer: \{ans_rule(20)\}
$HR
${BBOLD}Note:${EBOLD} ${BITALIC}You cannot use any operations except division (/) and negation (-).${EITALIC}
END_TEXT
Context()->normalStrings;

########################################################################

Context("LimitedFraction");
ANS(Compute("$ans")->cmp(studentsMustReduceFractions=>1, showProperFractions=>0));

ENDDOCUMENT();        
