## MO(1)
## TitleText1('Algebra for College Students')
## AuthorText1('Kaufmann, Schwitters')
## EditionText1('8')
## Section1('14.2')
## Problem1('52')
## KEYWORDS('algebra', 'sequences', 'geometric sequence', 'series', 'infinite series')

#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl", 
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());


Context("Numeric");
Context()->strings->add(Diverges=>{},D=>{alias=>'Diverges'});

$a = list_random(5,7);
$b = list_random(2,3,4);

$a1 = Compute("$a");
$a2 = Compute("-$a*$b");
$a3 = Compute("$a*$b^2");
$a4 = Compute("-$a*$b^3");


$ans = Compute("Diverges")->reduce;

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find the sum of the following infinite geometric sequence.  If it has no sum, type "Diverges" or "D". 
\[
\lbrace $a1, $a2, $a3, $a4, \ldots \rbrace
\]
$PAR
Sum: \{ans_rule(20)\}
$PAR
END_TEXT

#####################################################################

ANS(($ans)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
