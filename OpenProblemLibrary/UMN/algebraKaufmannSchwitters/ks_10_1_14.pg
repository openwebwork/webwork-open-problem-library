$a2 = Compute("$a^2");
$c = Compute("$a**3");

$ans = Compute("3/2");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( {$a2}^x = $c. \)
$PAR
Answer: \(x =\) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;

##############################################################

ANS( $ans->cmp);

