#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());


Context("Numeric");

$a = random(2,5,1);

$b = random(32,60,4);

$a1 = Compute("$a*1+3");
$a2 = Compute("$a*2+3");
$a3 = Compute("$a*3+3");
$a4 = Compute("$a*4+3");
$c = Compute("$a*$b+3");


$ans = Compute("$b*($a1 + $c )/2")->reduce;

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find the indicated sum.
\[
$a1 + $a2 + $a3 + $a4 + \cdots + $c
\]
$HR
Sum: \{ans_rule(20)\} $PAR
END_TEXT

#####################################################################

ANS(($ans)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
