########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

########################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

########################################################################

Context("Complex");
Context()->variables->add(x=>'Complex');

$a = random(3,7,1);

$lhs = Compute("(x+$a)(2x+1)");
$rhs = Compute("$a");

$an1 = Compute("0");
$an2 = Compute("-(2*$a+1)/2"); 

$ans = List("$an1, $an2");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Solve the quadratic equation using the method that seems most appropriate to you.
\[
$lhs = $rhs
\]
$PAR
Solutions (separate by commas): \(x =\) \{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

########################################################################

ANS( $ans->cmp() );

ENDDOCUMENT();
