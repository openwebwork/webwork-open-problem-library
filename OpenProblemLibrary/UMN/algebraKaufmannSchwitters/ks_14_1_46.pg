#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGunion.pl",
  "PGcourse.pl", 
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());


Context("Numeric");

$a = random(3,5,1);
$b = random(2,4,1);

$a1 = Compute("$a*$b");
$a2 = Compute("$a*$b+$a");
$a3 = Compute("$a*$b+2*$a");
$a4 = Compute("$a*$b+3*$a");
$c = Compute("$a*$b+24*$a");

$an = Compute("25*($a1 + $c )/2");

$ans = Compute("$an");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find the indicated sum.
\[
$a1 + $a2 + $a3 + $a4 + \cdots + $c
\]
$HR
Sum: \{ans_rule(20)\} $PAR
END_TEXT

#####################################################################

ANS(($ans)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.