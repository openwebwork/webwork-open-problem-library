$showPartialCorrectAnswers = 1;
TEXT(beginproblem());

Context("Numeric");

$a = random(5,8,1);

$b = Compute("$a+2");

$ans = Compute("$b!/(2*$a!)");


#####################################################################

Context()->texStrings;
BEGIN_TEXT
How many different \($b\)-letter permutations can be formed from \($a\) identical H's and two identical T's?
$PAR
Answer: \{ans_rule(20)\}
$PAR
END_TEXT

#####################################################################

ANS(($ans)->cmp());

