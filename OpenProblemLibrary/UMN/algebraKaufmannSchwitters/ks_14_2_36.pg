#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());


Context("Numeric");

$a = list_random(2,3);

$a1 = Compute("1");
$a2 = Compute("-$a");
$a3 = Compute("$a^2");
$a4 = Compute("-$a^3");

$a10 = Compute("$a^(10)");

$ans = Compute("(1+$a^11)/(1+$a)")->reduce;

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find the indicated sum.
\[
$a1 + ($a2) + $a3 + ($a4) + \cdots + $a10
\]
$HR
Sum: \{ans_rule(20)\} $PAR
END_TEXT

#####################################################################

ANS(($ans)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
