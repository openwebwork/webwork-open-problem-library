TEXT(beginproblem());

########################################################################

Context("Numeric");

$a = random(0.2,0.7,0.1);
$c = random(900,990, 10);
$d = random(705,805, 10);

$ans = Compute("($d-0.9*$c)/($a-0.9)");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( $a x + 0.9($c-x)=$d \).
$PAR
Answer: \( x = \) \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

##############################################################

ANS($ans->cmp);

