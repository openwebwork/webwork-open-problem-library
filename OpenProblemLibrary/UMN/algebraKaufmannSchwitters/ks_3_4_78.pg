);

########################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 0;

########################################################################

Context("Numeric");
Context()->variables->are(z=>'Real'); 

$a = random(3,9,1);

$poly = Compute("z-$a*z^2")->reduce;
$factors = List(Compute("z"), Compute("1-$a*z") );

$roots = List( 0, 1/$a );

########################################################################

Context()->texStrings;
BEGIN_TEXT
Solve the equation
\[ 
$poly = 0.
\]
Solutions (separate by commas): \(z =\) \{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

########################################################################

ANS( $roots->cmp() );

ENDDOCUMENT(); 