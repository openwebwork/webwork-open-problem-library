Context("Numeric");
Context()->variables->add(a=>'Real',b=>'Real');

$coeff = random(3,7,1);

$ans = Compute("$coeff*a^(1/2) * b^(1/2)");



##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

Write the following expression using positive rational exponents: \( $coeff \sqrt{ab} \).
$BR
$BR
Answer: \{ans_rule(20)\}
$BR
$HR
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#
ANS($ans->cmp);

