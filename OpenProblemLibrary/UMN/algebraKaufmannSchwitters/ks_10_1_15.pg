DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
);

##############################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 0;

##############################################################

Context("Numeric");

$a = random(2,3,1);
$b = random(2,5,1);
$c = random(1,3,1);

$d = Compute("$a^3");
$e = Compute("$a^2");

$ans = Compute("2*$c/(3*$b - 2)");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Solve the equation \($d^{$b x} = $e^{x+$c}. \)
$PAR
Answer: \(x =\) \{ans_rule(20)\}
$BR
END_TEXT
Context()->normalStrings;

##############################################################

ANS( $ans->cmp);

ENDDOCUMENT();