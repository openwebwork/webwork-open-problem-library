#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextIntegerFunctions.pl",
  "PGcourse.pl"
);

#####################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

#####################################################################

Context("Numeric");

$a = random(4,8,1);
$b = random(9,12,1);
$c = random(13,18,1);

$d = Compute("$a+$b+$c");

$ans1 = Compute("($a+$b)/($d)");
$ans2 = Compute("($a+$c)/($d)");
$ans3 = Compute("($c+$b)/($d)");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
A jar contains \($a\) white, \($b\) blue, and \($c\) red marbles.  If one marble is drawn at random from the jar, find the probability that:
$HR
$BBOLD 1. $EBOLD the marble is white or blue. $BR
Answer: \{ans_rule(20)\}
$PAR
$BBOLD 2. $EBOLD the marble is white or red.$BR
Answer: \{ans_rule(20)\}
$PAR
$BBOLD 3. $EBOLD the marble is blue or red.$BR
Answer: \{ans_rule(20)\}
$HR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans1)->cmp());
ANS(($ans2)->cmp());
ANS(($ans3)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
