DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
);

########################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 0;

########################################################################

Context("Numeric");

$a = random(-5,-2,1);
$b = random(1,5,1);

$f = Compute("$a*x - $b");

$ans = Compute("(x+$b)/$a");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Given \( f(x) = $f \), find \(f^{-1}.\)
$PAR
Answer: \( f^{-1}(x) \) = \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;

##############################################################

ANS($ans->cmp);

ENDDOCUMENT();