TEXT(beginproblem());

########################################################################

Context("Numeric");

$a = random(100,500,2);
$b = random(4,12,1);
$c = random(50,$a,2);

Context("Currency");
Context()->flags->set(trimTrailingZeros=>1);

$a1 = Currency("$a");
$c1 = Currency("$c");

Context("Numeric");

$ans = Compute("$c/(0.01*$a*$b)");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Solve \(i = Prt\) for \(t\), given that \(P= $a1\), \(r=$b\)$PERCENT, and \(i= $c1\).
$PAR
Answer: \( t = \) \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

##############################################################

ANS($ans->cmp);

