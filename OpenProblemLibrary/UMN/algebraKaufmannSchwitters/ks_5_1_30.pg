DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


########################################################################

Context("Fraction");

$a = random(3,5,2);
$b = random(2,3,1);
$c = random(2,3,1);

$d = Compute("$c+2");

$ans = Compute("(2^$d)/$a^$c")-> reduce;

########################################################################

Context()->texStrings;
BEGIN_TEXT
Express the number
\[
\left( \frac{2^{-$d}}{$a^{-$c}} \right)^{-1}
\]
as a reduced fraction. 
$PAR
Answer: \{ans_rule(20)\}
$HR
${BBOLD}Note:${EBOLD} ${BITALIC}You cannot use any operations except division (/) and negation (-).${EITALIC}
END_TEXT
Context()->normalStrings;

########################################################################

Context("LimitedFraction");
ANS(Compute("$ans")->cmp(studentsMustReduceFractions=>1, showProperFractions=>0));

ENDDOCUMENT();
