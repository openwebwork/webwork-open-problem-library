DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "contextFraction.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   #"PGcourse.pl",      # Customization file for the course
);

########################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

########################################################################

Context("Fraction");

$a = random(2,6,2);
$b = random(3,5,2);

$a3 = Compute("$a^3");
$b3 = Compute("$b^3");

$ans = Compute("-$a/$b");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Evaluate the numerical expression \(\displaystyle \left( - \frac{$a3}{$b3} \right)^\frac{1}{3}.\)
$PAR
Answer: \{ans_rule(20)\}
$HR
${BBOLD}Note:${EBOLD} ${BITALIC}You cannot use any operations except division (/) and negation (-).${EITALIC}
END_TEXT
Context()->normalStrings;

########################################################################

Context("LimitedFraction");
ANS($ans->cmp(showProperFractions=>0));

ENDDOCUMENT();