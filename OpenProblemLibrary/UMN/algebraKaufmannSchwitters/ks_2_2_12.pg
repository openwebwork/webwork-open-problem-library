DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "PGauxiliaryFunctions.pl"
);

########################################################################

TEXT(beginproblem());

########################################################################

Context("Numeric");

$a = random(2,4,1);
$b = random(5,10,1);
$c = non_zero_random(-10,11,1);

$ans = Compute("$a*($b+$c)");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle \frac{1}{$a} x - $c = $b .\)
$PAR
Answer: \( x = \) \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

##############################################################

ANS($ans->cmp);

