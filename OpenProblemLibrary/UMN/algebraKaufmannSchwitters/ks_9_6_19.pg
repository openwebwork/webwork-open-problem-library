#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl", 
);
#####################################################################

TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

#####################################################################
$w = 400;  # graph size
$tw = 500; # graph size in TeX

$f1 = Formula("(x^2+1)/(1-x)");

$graph1 = init_graph(-8,-8,8,8,'axes'=>[0,0],'ticks'=>[16,16],'grid'=>[16,16],'size'=>[500,500]);

$p1 = FEQ("$f1 for x in <-8,0.99> using color:blue weight:2");
$p1a = FEQ("$f1 for x in <1.01,8> using color:blue weight:2");

plot_functions($graph1,$p1,$p1a);

$popup1 = PopUp(['?','Yes', 'No'],'No');
$popup2 = PopUp(['?','Yes', 'No'],'No');
$popup3 = PopUp(['?','Yes', 'No'],'No');

###############################################################

Context()->texStrings;
BEGIN_TEXT
The graph below represents the rational function \(\displaystyle f(x) = \frac{x^2+1}{1-x}.\)
$PAR
$BCENTER
\{image(insertGraph($graph1),width=>$w,height=>$w,tex_size=>$tw)\}
$ECENTER $PAR
Determine the type(s) of symmetry exhibited by the graph of the function. Answer either "Yes" or "No".$BR
$HR
\{$popup1->menu\} $BBOLD 1. $EBOLD  Is the equation symmetric with respect to the \(x\)-axis? 
$PAR
\{$popup2->menu\} $BBOLD 2. $EBOLD  Is the equation symmetric with respect to the \(y\)-axis? 
$PAR
\{$popup3->menu\} $BBOLD 3. $EBOLD   Is the equation symmetric with respect to the origin? 
$HR
$BBOLD Note: $EBOLD $BITALIC You can click on the graph to enlarge the image.$EITALIC
$HR
$BBOLD Note:$EBOLD  $BITALIC You only have two attempts at this problem.$EITALIC
$HR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS($popup1->cmp);
ANS($popup2->cmp);
ANS($popup3->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
