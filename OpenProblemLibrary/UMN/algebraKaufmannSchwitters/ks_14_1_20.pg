#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

#####################################################################

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());

Context("Numeric");
Context()->variables->are(n =>'Real');
Context()->operators->undefine(",");
Context()->strings->remove("NONE");

$a = random(1,3,1);

$a1 = Compute("1+2*$a");
$a2 = Compute("1+$a");
$a3 = Compute("3+2*$a");
$a4 = Compute("2+$a");
$a5 = Compute("5+2*$a");

$ans = Compute("(1/2)*n+$a")->reduce;
$ans->{test_points} = [[2],[3],[4],[5],[6],[7],[8],[9],[10]];

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Find a formula for the general term \(a_n\) of the arithmetic sequence (starting with \(a_1\)):
\[
\lbrace \frac{$a1}{2}, $a2, \frac{$a3}{2}, $a4, \frac{$a5}{2}, \ldots\rbrace.
\]
$HR
\(a_n =\) \{ans_rule(20)\} $PAR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
