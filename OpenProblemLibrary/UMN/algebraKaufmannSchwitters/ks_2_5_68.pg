########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "unionLists.pl",
   "contextInequalities.pl"
   #"source.pl",        # allows code to be displayed on certain sites.
   #"PGcourse.pl",      # Customization file for the course
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################

Context("Numeric");

$a = random(-6,-2,1);
$b = random(2,5,1);
$c = random(1,9,1);
$d = random(-9,-2,1);
$e = random(-7,7,2);

# Kludge - I want the coefficient ($a*$b-$d) to have
# negative or positive possible values, but not zero.
if ( $a*$b-$d == 0 ) { 
  $d -= 1; 
}

Context("Interval");
Context()->strings->add(none=>{},EmptySet=>{alias=>"none"});

if ( $a*$b-$d > 0 ) {
$f = Compute("($e*$d-$a*$c)/($a*$b-$d)");
$ans = Interval("($f, infinity)");
} 
else{
$f = Compute("($e*$d-$a*$c)/($a*$b-$d)");
$ans = Interval("(-infinity,$f)");
}

##############################################################

Context()->texStrings;
BEGIN_TEXT
Solve the inequality and express the solution set using interval notation.
\[ 
$a ($b x + $c ) > $d(x + $e)
\]
Answer: \{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

##############################################################

ANS($ans->cmp);


ENDDOCUMENT();        
