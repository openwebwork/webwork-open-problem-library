DOCUMENT();        # This should be the first executable line in the problem

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

##############################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##############################################################

Context("Numeric");

$a = random(-3,3,1);
$b = random(-3,3,1);
$d = random(4,6,1);

$c = Compute("$a+3");

$ans = Compute("($d-$b)/3");

##############################################################

Context()->texStrings;
BEGIN_TEXT

Find the slope of the line determined by the two points \(($a,$b)\) and \(($c,$d).\)
$PAR
Slope: \(m =\) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;

##############################################################

ANS( $ans->cmp );

