##DESCRIPTION
##  Algebra: Dividing Polynomials
##ENDDESCRIPTION


## DBsubject(Algebra)
## DBchapter(Operations on polynomial and rational expressions)
## DBsection(Polynomials: divide)
## Date(10/23/2009)
## Institution(University of Minnesota)
## Author(Jonathan Rogness)
## MLT(Monic_over_x-a)
## Level(2)
## MO(1)
## TitleText1('Algebra for College Students')
## AuthorText1('Kaufmann, Schwitters')
## EditionText1('8')
## Section1('4.5')
## Problem1('14')
## KEYWORDS('algebra', 'rational expressions', 'dividing')

########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "contextLimitedPolynomial.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   #"PGcourse.pl",      # Customization file for the course
);

#####################################################################

TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

#####################################################################

Context("Numeric");

$a = random(20,30,5);
$b = random(5,8,1);

$dividend = Compute("x^2 + (-$a+$b)*x -$a*$b")->reduce;
$divisor = Compute("x+$b");

Context("LimitedPolynomial");

$quotient = Compute("x-$a");
$remainder = Formula("0");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Perform the indicated division and write the quotient and remainder in the provided blanks.
\[
($dividend) \div ($divisor)
\]
Answer: \{ans_rule(20)\} \( + \) \{ans_rule(10)\} \( / (x + $b) \)
END_TEXT
Context()->normalStrings;

########################################################################

ANS($quotient->cmp);
ANS($remainder->cmp);

ENDDOCUMENT();
