#####################################################################

TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

#####################################################################

Context("Numeric");

$ans1 = Compute("0.5");
$ans2 = Compute("0.25");
$ans3 = Compute("0.75");
$ans4 = Compute("0.25");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
$BITALIC Two $EITALIC coins are tossed.  Find the probability of tossing each of the following events:
$HR
$BBOLD 1. $EBOLD One head and one tail. $BR
Answer: \{ans_rule(20)\}
$PAR
$BBOLD 2. $EBOLD Two tails.$BR
Answer: \{ans_rule(20)\}
$PAR
$BBOLD 3. $EBOLD At least one tail.$BR
Answer: \{ans_rule(20)\}
$PAR
$BBOLD 4. $EBOLD No heads. $BR
Answer: \{ans_rule(20)\}
$HR
END_TEXT

#####################################################################

ANS(($ans1)->cmp());
ANS(($ans2)->cmp());
ANS(($ans3)->cmp());
ANS(($ans4)->cmp());

