DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

########################################################################

TEXT(beginproblem());

########################################################################

Context("Numeric");

$a = random(0.02,0.09,0.01);
$c = non_zero_random(-10,10,1);

$b = Compute("$c*$a");

$ans = Compute("$b/$a");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( \displaystyle $a x = $b \).
$PAR
Answer: \( x = \) \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

##############################################################

ANS($ans->cmp);

