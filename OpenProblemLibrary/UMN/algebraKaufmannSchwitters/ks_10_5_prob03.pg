DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
);

TEXT(beginproblem());

##############################################################

$a = random(1,4,2);

Context("Numeric");
Context()->variables->add(a=>"Real");
Context()->functions->undefine("ln","log");

$ans = Compute("-$a/a");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Simplify the following natural logarithm with the non-zero constant \(a\). 
\[
\ln \left( e^{-$a/a} \right).
\]
$PAR
Answer: \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;

##############################################################

ANS( $ans->cmp );

ENDDOCUMENT()