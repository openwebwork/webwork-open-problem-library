DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

##############################################################

Context("Numeric");
Context()->variables->add(y =>'Real', z =>'Real' );

$a = random(1,3,1);
$b = random(1,4,1);
$c = random(2,5,1);
$d = random(4,8,1);

$ans = Compute("($d - $a*$b)/(($a)^2+$c*($b)^2)");

##############################################################

TEXT(beginproblem());

Context()->texStrings;
BEGIN_TEXT
Find the limit, if it exists.  If a limit $BITALIC does not exist, $EITALIC type "DNE".
\[
\lim_{(x,y)\to ($a,$b)} \frac{$d - xy}{x^2+$c y^2}
\]
$PAR
Limit: \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;

##############################################################

Context("Numeric");
ANS( $ans->cmp() );

ENDDOCUMENT(); 
