TEXT(beginproblem);

#####################################################################

Context('Vector');

$a = random(2,6,1);
$b = random(1,4,1);
$c = random(5,8,1);

$an = Vector("<$b+$a,$c+$a>");

$ans = Compute("$an");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find a vector \(\mathbf{a}\) with representation given by the directed line segment \(\overrightarrow{AB}\), where \(A(-$a,-$a)\) and \(B($b,$c)\). $PAR 
Answer: \{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp(showCoordinateHints => 0 ));

