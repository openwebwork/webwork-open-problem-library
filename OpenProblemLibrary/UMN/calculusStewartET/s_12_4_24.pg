## KEYWORDS('calculus', 'three-dimensional', 'vectors', 'cross product', 'area', 'parallelogram')

#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

Context('Vector');

$a = random(1,4,1);
$b = random(3,4,1);
$c = random(2,5,1);
$d = non_zero_random(-3,3,1);

$x1 = Compute("-1");
$y1 = Compute("$a");
$z1 = Compute("$b");

$x2 = Compute("1-1");
$y2 = Compute("2+$a");
$z2 = Compute("$c+$b");

$x3 = Compute("2-1");
$y3 = Compute("-1+$a");
$z3 = Compute("$d+$b");

$x4 = Compute("1-1+2");
$y4 = Compute("2+$a-1");
$z4 = Compute("$c+$b+$d");

$v1 = Vector("<1, 2, $c>");
$v2 = Vector("<2,-1,$d>");
$ab = $v1 x $v2;
$abn = norm($ab);
$an = Compute("$abn");

Context('Numeric');

$ans = Compute("$an");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the area of the parallelogram with vertices \(A($x1,$y1,$z1)\), \(B($x2,$y2,$z2)\), \(C($x3,$y3,$z3)\), and \(D($x4,$y4,$z4)\).
$PAR
Area: \{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp());

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.
