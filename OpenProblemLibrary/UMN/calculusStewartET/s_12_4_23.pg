#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "parserVectorUtils.pl",
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

Context('Vector');

$a = random(1,4,1);
$b = random(3,6,1);
$c = random(7,8,1);

$x1 = Compute("$a");
$y1 = Compute("2");

$x2 = Compute("$a+$b");
$y2 = Compute("3");

$x3 = Compute("$a+2");
$y3 = Compute("$c");

$x4 = Compute("$a+$b+2");
$y4 = Compute("1+$c");

$v1 = Vector("<$b, 1, 0>");
$v2 = Vector("<2,$c-2,0>");
$ab = $v1 x $v2;
$abn = norm($ab);
$an = Compute("$abn");

Context('Numeric');

$ans = Compute("$an");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the area of the parallelogram with vertices \(A($x1,$y1)\), \(B($x2,$y2)\), \(C($x3,$y3)\), and \(D($x4,$y4)\).
$PAR
Area: \{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp());

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.