DOCUMENT();        # This should be the first executable line in the problem.

loadMacros('PGstandard.pl', 'PGML.pl', 'PGcourse.pl');

#$showPartialCorrectAnswers = 1;

Context('Vector');

$a = random(4,10,1);
$b = random(1,3,1);

$a1 = Vector("<1,2>");
$b1 = Vector("<-$a,$b>");

$ab = $a1 . $b1;

$an = norm($a1);

$an1 = $ab/$an;
$an2 = $ab/($a1.$a1)*$a1;

BEGIN_PGML
Find the scalar and vector projections of [`\mathbf{b}`] onto [`\mathbf{a}`], where [`\mathbf{a} = [$a1]`] and [`\mathbf{b} = [$b1]`].

    scalar projection: [`\quad \textrm{comp}_{\mathbf{a}}\mathbf{b}= `] [_]{$an1}{20}

    vector projection: [`\quad \textrm{proj}_{\mathbf{a}}\mathbf{b} = `] [_]{$an2->cmp()}{20}

END_PGML


ENDDOCUMENT();        # This should be the last executable line in the problem.