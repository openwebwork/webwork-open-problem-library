#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "parserImplicitPlane.pl",
  "PGcourse.pl"
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

Context('Numeric');

$p1 = random(-1,1,2);
$p2 = random(-1,1,2);
$p3 = random(3,7,2);
$q1 = random(2,4,1);
$q2 = random(2,6,1);
$q3 = random(-5,-4,1);
$d1 = random(2,4,1);
$d2 = random(2,4,1);
$d3 = random(2,3,1);

Context('Vector');

$p = Vector("<$p1,$p2,$p3>");
$q = Vector("<$q1,$q2,$q3>");
$d = Vector("<$d1,$d2,-$d3>");

$psq = $q-$p;
$dn = norm($d);
$dpsqd = $psq . $d;
$proj = ($dpsqd/($dn*$dn))*$d;
$an = $psq - $proj;

$ann = norm($an);

Context('Numeric');
$ans = Compute("$ann");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the distance of the point \(($q1, $q2, $q3)\) from the line \(\mathbf{r}(t) = \langle $p1+$d1 t, $p2+$d2 t, $p3-$d3 t \rangle.\) $PAR
Answer: \{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp());

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.
