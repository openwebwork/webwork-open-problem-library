$ans = Compute("$c*($a)^4*($b) - 2*($a)^2+($b)^2");

##############################################################

TEXT(beginproblem());

Context()->texStrings;
BEGIN_TEXT
Find the limit, if it exists.  If a limit $BITALIC does not exist, $EITALIC type "DNE".
\[
\lim_{(x,y)\to ($a,$b)} \left($c x^4 y - 2 x^2+y^2\right)
\]
$PAR
Limit: \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;

##############################################################

Context("Numeric");
ANS( $ans->cmp() );

