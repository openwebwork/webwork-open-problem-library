$showPartialCorrectAnswers = 0;

TEXT(beginproblem());

#####################################################################

Context("Numeric");

$a = random(4,6,2);

$b = Compute("($a/2)+1");
$ans = Compute("($a-1)/(2^$b)*pi");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Evaluate
\[ 
\int_0^{\pi} \cos^$a x \,dx.
\]
Answer: \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

