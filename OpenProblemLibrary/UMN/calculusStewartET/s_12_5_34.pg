#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "parserImplicitPlane.pl",
  "PGcourse.pl"
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

Context('Vector');

$a = random(5,6,1);
$b = random(2,4,1);
$c = list_random(2,4,8);

$a1 = Vector("<1,2-$a,2>");
$b1 = Vector("<3,-$b,-$c>");

$ab = $a1 x $b1;

Context("ImplicitPlane");

$ans = ImplicitPlane(Point(1,2,3),$ab);

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the linear equation of the plane through the point \((1,2,3)\) and contains the line represented by the vector equation \(\mathbf{r}(t) = \langle 3t, $a-$b t, 1-$c t\rangle.\)
$PAR
Equation: \{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp());

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.
