$ans = ImplicitPlane("(y-$b)+2*(z-$c)=0");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the linear equation of the plane through the point \(($a,$b,$c)\) and with normal vector \(\mathbf{j}+2\mathbf{k}.\)
$PAR
Equation: \{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp());

