#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl", 
);
#####################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 0;

#####################################################################

Context("Numeric");

###############################################################

$a = random(6,9,1);
$b = random(1,4,1);
$c = random(1,5,1);

###############################################################

$m = random(1,2,1);
if ($m==1) {
$x2 = Compute("$a");
$y2 = Compute("-$b");
$z2 = Compute("$c");

$x3 = Compute("-4*$a");
$y3 = Compute("4*$b");
$z3 = Compute("-4*$c");

$popup1 = PopUp(['?','Yes', 'No'],'Yes');
}

else{
$x2 = Compute("$a");
$y2 = Compute("-$b");
$z2 = Compute("$c");

$x3 = Compute("-3*$a");
$y3 = Compute("3*$b");
$z3 = Compute("-3*$c+1");

$popup1 = PopUp(['?','Yes', 'No'],'No');
}

###############################################################

$x4 = Compute("$a");
$y4 = Compute("-$b");
$z4 = Compute("$c");

$x5 = Compute("1+$a");
$y5 = Compute("2-$b");
$z5 = Compute("3+$c");

$x6 = Compute("5+$a");
$y6 = Compute("10-$b");
$z6 = Compute("15+$c");

$popup2 = PopUp(['?','Yes', 'No'],'Yes');

###############################################################

$n = random(1,2,1);
if ($n==1) {
$x8 = Compute("-1+$c");
$y8 = Compute("$a");
$z8 = Compute("1+$a");

$x9 = Compute("-1+3*$c");
$y9 = Compute("3*$a");
$z9 = Compute("1+3*$a");

$popup3 = PopUp(['?','Yes', 'No'],'Yes');
}

else{
$x8 = Compute("$c");
$y8 = Compute("$a");
$z8 = Compute("1+$a");

$x9 = Compute("-1+3*$c");
$y9 = Compute("3*$a");
$z9 = Compute("1+3*$a");

$popup3 = PopUp(['?','Yes', 'No'],'No');
}

###############################################################
Context()->texStrings;

BEGIN_TEXT
Determine whether the points lie on a straight line.  Answer $BITALIC Yes $EITALIC or $BITALIC No $EITALIC.
$HR
\{$popup1->menu\} $BBOLD 1. $EBOLD  \(A(0,0,0),\) \(B($x2,$y2,$z2),\) and \(C($x3,$y3,$z3).\)
$PAR
\{$popup2->menu\} $BBOLD 2. $EBOLD  \(D($x4,$y4,$z4),\) \(E($x5,$y5,$z5),\) and \(F($x6,$y6,$z6).\)
$PAR
\{$popup3->menu\} $BBOLD 3. $EBOLD  \(G(-1,0,1),\) \(H($x8,$y8,$z8),\) and \(I($x9,$y9,$z9).\)
$HR
$BBOLD Note:$EBOLD  $BITALIC You only have two attempts at this problem.$EITALIC
$HR
END_TEXT

Context()->normalStrings;

#####################################################################

ANS($popup1->cmp);
ANS($popup2->cmp);
ANS($popup3->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
