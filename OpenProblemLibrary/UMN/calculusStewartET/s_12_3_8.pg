#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

Context('Vector');

$a = random(2,3,1);
$b = random(4,5,1);
$c = random(1,10,1);
$d = random(2,5,1);

$a1 = Vector("<$a,0,-$b>");
$b1 = Vector("<1,1,-$d>");
$c1 = Vector("<4,$c,$a>");

$an1 = $a1 . $b1;
$an2 = $a1 . $c1;
$an3 = $b1 . $c1;

Context('Numeric');
$ans1 = Compute("$an1");
$ans2 = Compute("$an2");
$ans3 = Compute("$an3");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the following expressions if \(\mathbf{a} = $a\mathbf{i} - $b\mathbf{k}\), \(\mathbf{b} = \mathbf{i} +\mathbf{j} - $d\mathbf{k}\), and \(\mathbf{c} = 4\mathbf{i} +$c\mathbf{j} + $a\mathbf{k}\).
$HR
$BBOLD 1. $EBOLD \(\space \mathbf{a} \cdot \mathbf{b} = \) \{ ans_rule(20) \} $PAR
$BBOLD 2. $EBOLD \(\space \mathbf{a} \cdot \mathbf{c} = \) \{ ans_rule(20) \} $PAR
$BBOLD 3. $EBOLD \(\space \mathbf{b} \cdot \mathbf{c} = \) \{ ans_rule(20) \} $PAR
$HR
END_TEXT
Context()->normalStrings;

#####################################################################

Context('Numeric');
ANS(($ans1)->cmp());
ANS(($ans2)->cmp());
ANS(($ans3)->cmp());

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.
