DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

Context('Vector');

$a = random(1,3,1);
if ($a==1) {
$g1 = 'vector1.png';
$v = Vector("<-1,1>");
$u = Vector("<2,3>");
$w = Vector("<4,1>");
}
if ($a==2){
$g1 = 'vector2.png';
$v = Vector("<-1,2>");
$u = Vector("<3,2>");
$w = Vector("<3,1>");
}
if ($a==3){
$g1 = 'vector3.png';
$v = Vector("<-1,4>");
$u = Vector("<3,3>");
$w = Vector("<4,1>");
}

$an1 = Compute("$u+$v");
$an2 = Compute("2*$u+$w");
$an3 = Compute("3*$v-6*$w");
$an4 = norm($w);
$ans4 = Compute("$an4");

$ans1 = Compute("$an1");
$ans2 = Compute("$an2");
$ans3 = Compute("$an3");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the following expressions using the graph below of vectors \(\mathbf{u}\), \(\mathbf{v}\), and \(\mathbf{w}\). $PAR 
$BCENTER
\{image("$g1",width=>400,height=>400,tex_size=>400)\}
$PAR
$ECENTER
$HR
$BBOLD 1. $EBOLD \(\mathbf{u} + \mathbf{v} = \) \{ ans_rule(20) \} $PAR
$BBOLD 2. $EBOLD \(2\mathbf{u} + \mathbf{w} = \) \{ ans_rule(20) \} $PAR
$BBOLD 3. $EBOLD \(3\mathbf{v} - 6 \mathbf{w} = \) \{ ans_rule(20) \} $PAR
$BBOLD 4. $EBOLD \(|\mathbf{w}| = \) \{ ans_rule(20) \} $PAR
$HR
$BBOLD Note: $EBOLD $BITALIC You can click on the graph to enlarge the image.$EITALIC
$HR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans1)->cmp(showCoordinateHints => 0 ));
ANS(($ans2)->cmp(showCoordinateHints => 0 ));
ANS(($ans3)->cmp(showCoordinateHints => 0 ));
Context("Numeric");
ANS(($ans4)->cmp());

########################################################################
$w1=$w->extract(1);
$w2=$w->extract(2);
$s=$w1*$w1+$w2*$w2;
$uu2=2*$u;
$a=3*$v;
$b=6*$w;

Context()->texStrings;
BEGIN_SOLUTION
$PAR SOLUTION $PAR
\( \mathbf{u} = $u, \mathbf{v} = $v, \mathbf{w} = $w \). Thus
$PAR
$BBOLD 1. $EBOLD \(\mathbf{u} + \mathbf{v} = $ans1\) $PAR
$BBOLD 2. $EBOLD \(2\mathbf{u} + \mathbf{w} = 
$uu2 + $w = $ans2\)  $PAR
$BBOLD 3. $EBOLD \(3\mathbf{v} - 6 \mathbf{w} = 
$a-$b = $ans3\) $PAR
$BBOLD 4. $EBOLD \(|\mathbf{w}| = \sqrt{$w1^2+$w2^2} = \sqrt{$s}\)   

END_SOLUTION

ENDDOCUMENT();        # This should be the last executable line in the problem.
