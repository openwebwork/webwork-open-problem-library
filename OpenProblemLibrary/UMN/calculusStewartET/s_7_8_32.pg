$a = random(2,5,1);

$a2 = Compute("$a^2");

$ans = Compute("pi/2");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Compute the value of the following improper integral.  If it is divergent, type "Diverges" or "D".
\[ 
\int_{0}^{$a}\! \frac{dx}{\sqrt{$a2-x^2}}
\]
Answer: \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

