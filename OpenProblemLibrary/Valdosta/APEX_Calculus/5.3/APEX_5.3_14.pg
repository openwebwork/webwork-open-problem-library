###################################
# Setup

$x = 1;
$n = random(4,9,1);
$a1 = "\frac{1}{2}";

@sum = ($a1);
for ($i = 2; $i <= $n; $i++) {
  $num = $i;
  $den = $i + 1;
  $next = "\dfrac{$num}{$den}";
  push(@sum, $next);
}

$str_sum = join( '+', @sum);

###################################
# Answers

$showPartialCorrectAnswers = 1;
Context()->variables->are(i => 'Real');

$upper = Real($n + $x - 1);
$term = Formula("i/(i+1)");

###################################
# Main text

BEGIN_PGML

Write the sum in summation notation, using the given
lower bound.

[```
  [$str_sum] = \sum_{i=[$x]}^{b} a_i
```]

[`b = `][_]{$upper}{5}, [`a_i = `][_]{$term}{10}
END_PGML

###################################

$x1 = $x+1;

BEGIN_PGML_SOLUTION
[```
\begin{align*}
  &[$str_sum] \\
  &\quad = \frac{1}{1+1} + \frac{2}{2 + 1} + \cdots + 
  \frac{[$upper]}{[$upper] + 1} \\
  &\quad = \sum_{i=[$x]}^{[$upper]} \frac{i}{i+1}
\end{align*}
```]
END_PGML_SOLUTION
