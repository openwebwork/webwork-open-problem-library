#Problem APEX 2.2.17

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "parserPopUp.pl"	
          );
## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Conceptual understanding of derivatives)
## Institution(Valdosta State University)
## Author(S. V. Ault)
## MLT(graphsderivatives)
## Level(3)
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('2.2')
## Problem1('17')

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

#####################################################################

$a = (random(1,5,1)*random(-1,1,2))/2;
$b = random(-3,3,1);
$bl = $b-0.001;
$br = $b+0.001;

$w = 300;  # graph size
$tw = 300; # graph size in TeX

$graph = init_graph(-10,-10,10,10,'axes'=>[0,0],
  'ticks'=>[20,20],'grid'=>[20,20],'size'=>[300,300]);

$p1 = FEQ("$a/(x-$b) for x in [-10,$bl] 
  using color:green weight:2");
$p2 = FEQ("$a/(x-$b) for x in [$br,10] 
  using color:green weight:2");
$p3 = FEQ("-$a/(x-$b)^2 for x in [-10,$bl] 
  using color:blue weight:2");
$p4 = FEQ("-$a/(x-$b)^2 for x in [$br,10] 
  using color:blue weight:2");

plot_functions($graph,$p1,$p2,$p3,$p4);

$ans_a = "f is blue and its derivative is green";
$ans_b = "f is green and its derivative is blue";
$r = random(1,2,1);
if ($r==1) {
   @answers = ($ans_b, $ans_a);
} else {
   @answers = ($ans_a, $ans_b);
}
$ans = PopUp( ["?", @answers[0], @answers[1] ],
	       $ans_b );


###############################################################
Context()->texStrings;

BEGIN_TEXT
The graphs of two functions are shown below.  One is the graph
of \(f(x)\) and the other is the graph of its derivative, 
\(f'(x)\).  Identify which graph is which.
$BCENTER
\{image(insertGraph($graph),width=>$w,height=>$w,tex_size=>$tw)\}
$ECENTER 
$PAR
\{ $ans->menu() \}
END_TEXT

Context()->normalStrings;


#####################################################################

ANS( str_cmp($ans->correct_ans()) );

#####################################################################

ENDDOCUMENT();    
