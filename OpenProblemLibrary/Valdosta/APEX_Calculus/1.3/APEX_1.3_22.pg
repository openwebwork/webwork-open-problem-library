$showPartialCorrectAnswers = 1;
$a=random(-4,4,1);
$b=random(2,5,1);
$c=random(3,6,1);

$ans = $b**($a**2 - $c*$a);

TEXT(beginproblem());

BEGIN_TEXT
Evaluate the limit
\[ 
  \displaystyle \lim_{x \to $a} $b^{x^2 - $c x}
\]
Enter $BBOLD DNE $EBOLD if the limit does not exist.
$PAR Limit = \{ans_rule(10) \}
$BR
END_TEXT

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
\[ 
  \displaystyle \lim_{x \to $a} $b^{x^2 - $c x}
  = $b^{($a)^2 - $c($a)}
  = $ans.
\]
$BR
END_SOLUTION


ANS(Real($ans)->cmp());

ENDDOCUMENT();    
