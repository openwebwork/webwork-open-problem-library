## DBsubject(Calculus - single variable)
## DBchapter(Limits and continuity)
## DBsection(Evaluating limits - factoring)
## Institution(Valdosta State University)
## Author(S. V. Ault)
## Level(2)
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('1.3')
## Problem1('30')

$showPartialCorrectAnswers = 1;
$a=non_zero_random(-10,10,1);
do {
  $b=non_zero_random(1,5,1);
  $c=non_zero_random(-10,10,1);
} while (-$c == $b*$a);


$num = nicestring([1, 0, -$a*$a], ['t^2', 't', '']);
$den = nicestring([$b, -$a*$b+$c, -$a*$c], ['t^2', 't', '']);


$n_ans = 2*$a;
$d_ans = $a*$b + $c;
$ans = $n_ans/$d_ans;

TEXT(beginproblem());

BEGIN_TEXT
Evaluate the limit
\[ 
  \lim_{t\to $a} \frac{$num}{$den}
\]
Enter $BBOLD DNE $EBOLD if the limit does not exist.
$PAR Limit = \{ans_rule(10) \}
$BR
END_TEXT

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
\[ 
  \lim_{t \to $a} \frac{$num}{$den}
  = \lim_{t \to $a} \frac{ (t - $a)(t + $a) }{($b t + $c)(t - $a)}
  = \lim_{t \to $a} \frac{ t + $a }{$b t + $c}
  = \frac{($a) + $a}{$b($a) + $c}
  = \frac{$n_ans}{$d_ans}
\]
$BR
END_SOLUTION

ANS(num_cmp($ans, strings=>["DNE"]));

ENDDOCUMENT();    
