  "MathObjects.pl",
  "PGcourse.pl"
);

## DBsubject(Algebra)
## DBchapter(Inverse functions)
## DBsection(Finding the inverse function)
## Institution(Valdosta State University)
## Author(S. V. Ault)
## MLT(Compositions_thenInverseQuestion)
## Level(3)
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('2.7')
## Problem1('8')

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a = random(1,5,1);
do {
  $b = random(1,5,1)*random(-1,1,2);
} until (gcd($a, $b) == 1);

$as = $a**2;
$ab = $a * $b;

do {
  $c = random(2,7,1)*random(-1,1,2);

  $ac = $a * $c;
  $bc = $b * $c;
  $num = $as + $bc;

} until (gcd($c, $a) == 1 && $num != 0);
$d = -$a;

if ($a==1) {
   $f = "\frac{x + $b}{$c x + $d}";
} else {
  $f = "\frac{$a x + $b}{$c x + $d}";
}


$ans = Compute("x");
$choice = PopUp(["?", "is", "is not"], "is");

BEGIN_TEXT
$PAR
Determine whether the function below is its own inverse.
\[
  f(x) = $f, \qquad x \neq \frac{$a}{$c}.
\]
$HR
$PAR
\( f(f(x)) = \)\{ ans_rule(10) \}
$BR
Conclusion: \(f\) \{ $choice->menu() \} the inverse of itself.
END_TEXT

ANS( fun_cmp($ans, vars=>['x']) );
ANS( str_cmp( $choice->correct_ans() ) );

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
\[
  \begin{array}{rcl}
    f(f(x)) &=& \dfrac{ $a\left( $f \right) + $b }
    {$c \left($f \right) + $d}\\
    &&\\
    &=& \dfrac{ \frac{$as x + $ab}{$c x - $a} + $b}
    { \frac{$ac x + $bc}{$c x - $a} - $a}\\
    &&\\
    &=& \dfrac{ $as x + $ab + $b($c x - $a)}
    { $ac x + $bc - $a($c x - $a)}\\
    &&\\
    &=& \dfrac{$as x + $ab + $bc x - $ab}
    { $ac x + $bc - $ac x + $as}\\
    &&\\
    &=& \dfrac{$num x}{$num} \\
    &&\\
    &=& x
  \end{array}
\]
$PAR
Since \( f(f(x)) = x \), \(f\) is its own inverse.
END_SOLUTION

ENDDOCUMENT();    

