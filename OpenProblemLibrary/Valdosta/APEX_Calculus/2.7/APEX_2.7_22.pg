#Problem APEX 2.7.22

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "MathObjects.pl"
);

## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Derivatives of inverse trigonometric functions)
## Institution(Valdosta State University)
## Author(S. V. Ault)
## Level(2)
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('2.7')
## Problem1('22')

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,4,1);
if ($r==2) {
  $g = "\sqrt{x}";
  $g_a = "sqrt(x)";
} else {
  $g = "\sqrt[$r]{x}";
  $g_a = "x^(1/$r)";
}
$r1 = $r - 1;
$gp = "\frac{1}{$r x^{$r1/$r}}";
$gp_a = "1/[$r x^{$r1/$r}]";

$choice1 = random(1,4,1);
if ($choice1 == 1) {
  $f = "\sin^{-1}";

  $fp = "\frac{1}{\sqrt{1 - x^2}}";
  $fp_a = "1/sqrt(1-x^2)";

  $deriv = "\frac{1}{\sqrt{1 - ($g)^2}} \cdot $gp}";
  $ans = "1/sqrt(1 - ($g_a)^2) * $gp_a";
} elsif($choice1 == 2) {
  $f = "\cos^{-1}";

  $fp = "\frac{-1}{\sqrt{1 - x^2}}";
  $fp_a = "-1/sqrt(1-x^2)";

  $deriv = "-\frac{1}{\sqrt{1 - ($g)^2}} \cdot $gp}";
  $ans = "-1/sqrt(1 - ($g_a)^2) * $gp_a";
} elsif($choice1 == 3) {
  $f = "\tan^{-1}";

  $fp = "\frac{1}{1 + x^2}";
  $fp_a = "1/(1+x^2)";

  $deriv = "\frac{1}{1 + ($g)^2} \cdot $gp}";
  $ans = "1/(1 + ($g_a)^2) * $gp_a";
} elsif($choice1 == 4) {
  $f = "\cot^{-1}";

  $fp = "\frac{-1}{1 + x^2}";
  $fp_a = "-1/(1+x^2)";

  $deriv = "-\frac{1}{1 + ($g)^2} \cdot $gp}";
  $ans = "-1/(1 + ($g_a)^2) * $gp_a";
} 

BEGIN_TEXT
$PAR
Compute the derivatives of the given function.
$PAR
\( \dfrac{d}{dx}\left[ $f($g) \right] = \)\{ ans_rule(20) \}
$PAR
END_TEXT

ANS( fun_cmp( $ans, vars=>['x'], limits=>[-1,1]) );

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
Use the Chain Rule with the rules for inverse trigonometric functions.
\[
  \dfrac{d}{dx}\left[ $f($g) \right] = $deriv
\]
END_SOLUTION

ENDDOCUMENT();    

