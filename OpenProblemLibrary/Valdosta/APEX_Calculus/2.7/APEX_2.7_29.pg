TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,12,1);
$b = random(2,5,1);

$ab = $a * $b;
$bs = $b**2;

$r = random(1,6,1);
$r = 1;
if ($r==1) {
  $f = "$a \sin^{-1} $b x";

  $x1 = 0;
  $y1 = 0;

  $deriv = "\frac{$ab}{\sqrt{1-$bs x^2}}";
  $m = Compute("$ab/sqrt(1 - ($b*$x1)^2)");
} 
