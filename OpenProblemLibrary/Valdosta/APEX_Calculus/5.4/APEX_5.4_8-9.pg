#Problem APEX 5.4.8-9

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

## DBsubject(Calculus - single variable)
## DBchapter(Integrals)
## DBsection(Definite integrals (with trigonometric functions))
## Institution(Valdosta State University)
## Author(S. V. Ault)
## Level(3)
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('5.4')
## Problem1('8 9')

## Also handles problem 28

TEXT(beginproblem());

###################################
# Setup


## a)
$a = random(2,15,1)*random(-1,1,2);

$a1 = pi/2;
$b1 = pi;

$f = "$a \cos x";

$fI = Formula("$a sin(x)");
$ans1 = $fI->eval(x=>$b1) - $fI->eval(x=>$a1);

## b)
$b = random(2,15,1)*random(-1,1,2);

$a2 = 0;
$b2 = pi/4;

$g = "$b \sec^2 \theta";

$gI = Formula("$b tan(x)");
$ans2 = $gI->eval(x=>$b2) - $gI->eval(x=>$a2);

## c)
$c = random(2,15,1);

$a3 = pi/6;
$b3 = pi/3;

$h = "$c \csc t \cot t";

$hI = Formula("-$c/sin(x)");
$ans3 = $hI->eval(x=>$b3) - $hI->eval(x=>$a3);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
$PAR
Evaluate the definite integrals
$PAR
a) \(\displaystyle\int_{\pi/2}^{\pi} $f \, dx = \) 
\{ans_rule(15)\} 
$BR$HR
$PAR
b) \(\displaystyle\int_{0}^{\pi/4} $g \, d\theta = \) 
\{ans_rule(15)\} 
$BR$HR
$PAR
c) \(\displaystyle\int_{\pi/6}^{\pi/3} $h \, dt = \) 
\{ans_rule(15)\}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));

###################################

$c2 = $c * 2;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
Use the Fundamental Theorem of Calculus.
\[
  \begin{array}{rcl}
    \displaystyle \int_{\pi/2}^{\pi} $f \, dx &=&
    \left($a \sin x \right) \Big|_{\pi/2}^{\pi}\\
    &=& \left($a \sin \pi\right) -  \left($a \sin (\pi/2)\right)\\
    &=& $ans1
  \end{array}
\]
$BR$HR
\[
  \begin{array}{rcl}
    \displaystyle \int_{0}^{\pi/4} $g \, d\theta 
    &=& \left( $b\tan \theta \right) \Big|_{0}^{\pi/4}\\
    &=& \left( $b\tan(\pi/4)\right) -
    \left( $b\tan 0\right)\\
    &=& $ans2
  \end{array}
\]
$BR$HR
\[
  \begin{array}{rcl}
    \displaystyle \int_{\pi/6}^{\pi/3} $h \, dt &=&
    \left(-$c \csc t \right) \Big|_{\pi/6}^{\pi/3}\\
    &=& \left(\dfrac{-$c}{\sin (\pi/3)}\right) - 
    \left(\dfrac{-$c}{\sin(\pi/6)}
    \right)\\
    &=& -\dfrac{$c2}{\sqrt{3}} + $c2
  \end{array}
\]
END_SOLUTION
ENDDOCUMENT();    
