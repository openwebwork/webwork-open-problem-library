#Problem APEX 5.4.13

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

## DBsubject(Calculus - single variable)
## DBchapter(Integrals)
## DBsection(Definite integrals (with trigonometric functions))
## Institution(Valdosta State University)
## Author(S. V. Ault)
## MLT(DefSumTrig)
## Level(3)
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('5.4')
## Problem1('13')



TEXT(beginproblem());

###################################
# Setup


## a)
$a = random(2,25,1);

$a1 = 0;
$b1 = pi;

$f = "\left($a \cos \theta - $a \sin \theta\right)";

$fI = Formula("$a(sin(x) + cos(x))");
$ans1 = $fI->eval(x=>$b1) - $fI->eval(x=>$a1);

## b)
$b = random(2,15,1)*random(-1,1,2);

$a2 = pi/2;
$b2 = 3*pi/2;

$g = $f;
$gI = $fI;
$ans2 = $gI->eval(x=>$b2) - $gI->eval(x=>$a2);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
$PAR
Evaluate the definite integrals
$PAR
a) \(\displaystyle\int_{$a1}^{\pi} $f \, d\theta = \) 
\{ans_rule(15)\} 
$BR$HR
$PAR
b) \(\displaystyle\int_{\pi/2}^{3\pi/2} $g \, d\theta = \) 
\{ans_rule(15)\} 
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

###################################


Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
Use the Fundamental Theorem of Calculus.
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a1}^{\pi} $f \, d\theta &=&
    \left($a \sin \theta + $a \cos \theta \right) \Big|_{$a1}^{\pi}\\
    &=& \left(0 + $a(-1)\right) - \left(0 + $a(1)\right)\\
    &=& $ans1
  \end{array}
\]
$BR$HR
\[
  \begin{array}{rcl}
    \displaystyle \int_{\pi/2}^{3\pi/2} $g \, d\theta 
    &=& \left($a \sin \theta + $a \cos \theta \right) 
    \Big|_{\pi/2}^{3\pi/2}\\
    &=& \left($a(-1) + 0\right) - \left($a(1) + 0\right)\\
    &=& $ans2
  \end{array}
\]
END_SOLUTION
ENDDOCUMENT();    
