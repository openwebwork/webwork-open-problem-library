DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$d = random(0,1,1);  # insert more randomness
$a = random(2,9,1);
$asq = $a*$a;
$whichtrig1 = random(0,1,1);
$whichtrig2 = random(0,1,1);

if ( $whichtrig1 ) {
    $g = '\cos';
    $ans = "-1*$a*sin(";
    $soln1 = "-$a \sin(";
} else {
    $g = '\sin';
    $ans = "$a*cos(";
    $soln1 = "$a \cos(";
}
if ( $whichtrig2 ) {
    $h = '\arctan';
    $ans .= "arctan($a*x))/(1 + ($a*x)^2)";
    $soln1 .= "\arctan($a x))";
    $soln = "\frac{$soln1}{1 + ($a x)^2} = " . 
        "\frac{$soln1}{1 + $asq x^2}";
    $lim = [ -2,2 ];
} else {
    $h = '\arcsin';
    if ( $g eq '\sin' ) { # should get rid of this combination
        $ans = $a;
	$soln = "\frac{d}{dx}($a x) = $a";
	$lim = [ -1/$a,1/$a ];
    } else {
	$ans = "-1*$asq*x/sqrt(1 - $asq*x*x)";
        $soln1 .= "\arcsin($a x))";
        $soln = "\frac{$soln1}{\sqrt{1 - ($a x)^2}} = " . 
            "-\frac{$asq x}{\sqrt{1 - $asq x^2}}";
        $lim = [ -1/$a, 1/$a ];
    }
}

Context()->flags->set( limits=>$lim );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( f(x) \), below.  It may be to
your advantage to simplify before differentiating.  
$BR
\( f(x) = $g($h($a x)) \)

$PAR
\( f'(x) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( $ans )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( f'(x) = $soln \)

END_SOLUTION
Context()->normalStrings;



;
ENDDOCUMENT();
