DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");
Context()->variables->are( t=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);
$a = random(1,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( f(t) \), below.
$BR

 \( f(t)=\ln(t^{$r}+$a) \)

$PAR
\( f'(t) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "($r*t^($r-1))/(t^($r)+$a)" )->reduce()->cmp() );

$rp1 = ( $r == 2 ) ? '' : '^{' . ($r-1) . '}';

Context()->texStrings;
BEGIN_SOLUTION

\( f'(t) = \frac{$r t$rp1}{t^{$r}+$a} \)

END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
