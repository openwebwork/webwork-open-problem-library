DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

@vars = (qw( a b c d k m n p q r s ));
$i = random(0,(@vars - 2),1);
$a = $vars[$i];
$b = $vars[$i+1];

Context()->constants->add( $a=>2.1345, $b=>5.432 );
# this means that student answers are
#    not reduced to the numerical value
#    specified in the Context
Context()->flags->set( formatStudentAnswer=>'parsed' );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( j(x) \), below.  Assume that \( $a \)
and \( $b \) are constants.
$BR
\( j(x)=\ln(e^{$a x}+ $b) \)

$PAR
\( j'(x) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$a*e^($a*x)/(e^($a*x) + $b)" )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\(\displaystyle j'(x) = \frac{$a e^{$a x}}{e^{$a x} + $b} \)

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
