DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");
Context()->variables->add( t=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$newr = $psvn+1;
SRAND($newr);

$whichtrig = random(0,1,1);
$dummy = random(0,1,1);     # get another random call before generating $a
$a = random(2,9,1);
$asq = $a*$a;

Context()->flags->set( limits=>[-1/$a,1/$a] );

if ( $whichtrig ) {
    $g = '\arctan';
    $ans = "$a/(1 + ($a*t)^2)";
    $soln = "\frac{$a}{1 + ($a t)^2} = \frac{$a}{1 + $asq t^2}";
} else {
    $g = '\arcsin';
    $ans = "$a/sqrt(1 - ($a*t)^2)";
    $soln = "\frac{$a}{\sqrt{1 - ($a t)^2}} = \frac{$a}{\sqrt{1 - $asq t^2}}";
}

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( r(t) \), below.  It may be to
your advantage to simplify before differentiating.  
$BR
\(  r(t) = $g($a t) \)

$PAR
\( r'(t) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( $ans )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( r'(t) = $soln \)

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
