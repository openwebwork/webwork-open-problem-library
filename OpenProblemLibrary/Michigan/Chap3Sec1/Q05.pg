DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric");

$pow = random(-29,-8,1);
$f = Compute("x^($pow)")->reduce;
$df = $f->D;

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
\( y=$f \).

$BR$BR

\(\displaystyle {dy\over dx} =\) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS($df->cmp);

$p1 = $pow - 1;
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ {dy\over dx} = $pow x^{$pow - 1} = $pow x^{$p1} \]
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
