DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$pow = random(2,19,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( \displaystyle{f(x)=\frac{1}{x^{$pow}} } \).

$PAR
\( f'(x) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS(Compute( "-1*$pow*x^(-1*($pow+1))" )->cmp() );

$p1 = $pow + 1;
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( f(x) = \frac{1}{x^{$pow}} = x^{-$pow} \), so

\[ f'(x) = -$pow x^{-$pow - 1} = -$pow x^{-$p1}. \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
