DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");
Context()->constants->add( a=>0.01, b=>7.5, c=>11.14 );
# this means that student answers are
#    not reduced to the numerical value
#    specified in the Context
Context()->flags->set( formatStudentAnswer=>'parsed' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$p1 = random(2,15,1);
$p2 = $p1 - random(1,($p1-1),1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( y = ax^{$p1} + bx^{$p2} + c \).
Assume that \( a \), \( b \) and \( c \) are constants.

$PAR
\( {dy\over dx} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS(Compute( "$p1*a*x^($p1-1) + $p2*b*x^($p2-1)" )->cmp() );

$xp = ( $p1-1 == 1 ) ? 'x' : "x^{" . ($p1-1) . "}";
if ( $p2-1 ) {
    $xp2 = ($p2-1 == 1) ? 'x' : "x^{" . ($p2-1) . "}";
} else {
    $xp2 = '';
}

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[  {dy\over dx} = $p1 a $xp + $p2 b $xp2. \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
