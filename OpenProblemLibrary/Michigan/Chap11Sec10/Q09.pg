DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

Context("Numeric");
Context()->variables->add( t=>'Real' );
$showPartialCorrectAnswers = 1;

$a = random(2,7,1);
$b = random(2,7,1);
$b++ if ( $b == $a );
$r = random(2,5,1);

TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT

Find the amplitude of \($a \sin $r t + $b\cos $r t\).

$PAR
amplitude = \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS(Compute("sqrt($a^2 + $b^2)")->cmp() );

$amp = $a*$a + $b*$b;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

The amplitude is \(\sqrt{$a^2+$b^2}=\sqrt{$amp}\).

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
