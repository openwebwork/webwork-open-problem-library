DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

Context("Numeric");
Context()->variables->add( y=>'Real' );
$showPartialCorrectAnswers = 1;

$a = random(1,5,1);
$aexp = ( $a == 1 ) ? '' : "^{$a}";
$which = list_random(0,1);
if ( $which ) {
    $divf = "\mbox{div}\,\left(\frac{y\vec i - x\vec j}{(x^2 + y^2)$aexp}\right)";
    $fx = Compute( "-2*$a*x*y/(x^2 + y^2)^($a+1)" );
    $fy = Compute( "2*$a*x*y/(x^2 + y^2)^($a+1)" );
} else {
    $divf = "\mbox{div}\,\left(\frac{-y\vec i + x\vec j}{(x^2 + y^2)$aexp}\right)";
    $fx = Compute( "2*$a*x*y/(x^2 + y^2)^($a+1)" );
    $fy = Compute( "-2*$a*x*y/(x^2 + y^2)^($a+1)" );
}
$div = Compute("0");

$vs = PopUp( [ "?", "vector", "scalar" ], "scalar" );

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

Consider \(\displaystyle $divf \).
$PAR
${BBOLD}(a)$EBOLD
Is this a vector or a scalar?  \{ $vs->menu() \}

$PAR
${BBOLD}(b)$EBOLD
Calculate it:
$BR
\( $divf = \) \{ ans_rule(20) \} + \{ ans_rule(20) \} = \{ ans_rule(15) \}

END_TEXT
Context()->normalStrings;

ANS($vs->cmp() );
ANS($fx->cmp() );
ANS($fy->cmp() );
ANS($div->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

${BBOLD}(a)$EBOLD
\( $divf \) is a scalar

$PAR
${BBOLD}(b)$EBOLD
We have
\[
$divf = $fx + $fy = 0.
\]

END_SOLUTION
Context()->normalStrings;

;

ENDDOCUMENT();
