DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"MathObjects.pl",
# "parserNumberWithUnits.pl",
# "parserFormulaWithUnits.pl", 
# "parserFormulaUpToConstant.pl",
# "PGcourse.pl",
);

Context('Vector2D');
Context()->flags->set( ijk=>1 );
Context()->constants->set(
  i => {TeX => "\,\mathit{\vec i}"},
  j => {TeX => "\,\mathit{\vec j}"},
);

$showPartialCorrectAnswers = 1;

$var = list_random('x','y');
$ij = ( $var eq 'x' ) ? 0 : 1;
$ji = ($ij + 1)%2;

$orient = list_random('vertical', 'horizontal');
$xy = ( $orient eq 'vertical' ) ? 'x' : 'y';
$yx = ( $xy eq 'x' ) ? 'y' : 'x';

@comp = ( Compute(0), Compute(0) );
$comp[$ij] = Compute( $xy );
$vec = Vector( @comp );

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

Write a formula for a two-dimensional vector field which has
all vectors parallel to the \( $var \)-axis and
all vectors on a $orient line having the same magnitude.

$PAR
\(\vec V = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS($vec->cmp( checker=>sub {
		  my ( $c, $s, @ans ) = @_;
		  # my @sv = $s->value;
		  return $s.$I == 0 && $s->D($yx).$J == 0;
		  # return $sv[$ji] == 0 && $sv[$ij]->D($yx) == 0;
	      } ) );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

One possible solution is \(\vec{V}(x, y) = $vec\)

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
