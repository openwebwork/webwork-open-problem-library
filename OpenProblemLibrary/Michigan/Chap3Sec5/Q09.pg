DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( f(x)=x^{$r}\cos x \)

$PAR
\( f'(x) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$r*x^($r-1)*cos(x) - x^($r)*sin(x)" )->cmp() );

$xr1 = ( $r == 2 ) ? 'x' : 'x^{' . ($r-1) . '}';

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Using the product rule,

\[ f'(x) = $r $xr1 \cos(x) - x^{$r} \sin(x) \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
