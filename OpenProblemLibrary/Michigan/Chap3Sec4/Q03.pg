DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");
Context()->variables->add( t=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$p = random(2,5,1);
$a = random(1,15,1);
$r = random(50,100,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
 
\( w=(t^{$p}+$a)^{$r} \)

$PAR
\( {dw\over dt} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$r*(t^($p) + $a)^($r-1)*$p*t^($p-1)" )->cmp() );

$r1 = $r - 1;
$tp1 = ( $p == 2 ) ? 't' : 't^{' . ($p-1) . '}';
$rp = $r*$p;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ {dw\over dt} = $r (t^$p + $a)^{$r1} $p $tp1 = $rp $tp1 (t^$p + $a)^{$r1} \]

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
