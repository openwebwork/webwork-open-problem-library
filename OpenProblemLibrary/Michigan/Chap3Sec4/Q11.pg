DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);
$b = random(2,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
\( f(x) = e^{$r x} (x^2 + $b^{x}) \)

$PAR
\( f'(x) = \) \{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$r*e^($r*x)*(x^2 + $b^x) + e^($r*x)*(2*x + ln($b)*$b^x)" )->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ f'(x) = $r e^{$r x} (x^2 + $b^x) + e^{$r x} (2x + \ln($b) $b^x) \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
