DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

@const = ( '\pi', '\sqrt{2}', 'e', '\ln(3)', '4.15', '\sin(1)' );
@conste = ( 'pi', 'sqrt(2)', 'e', 'ln(3)', '4.15', 'sin(1)' );
$i = random(0,scalar(@const)-1,1);
$c = $const[ $i ];
$ce = $conste[ $i ];

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
 
\( g(x)=e^{$c x} \)

$PAR
\( g'(x) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$ce*e^($ce*x)" )->cmp() );

Context()->texStrings;
BEGIN_SOLUTION

\( \displaystyle g'(x) = $c e^{$c x} \)

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
