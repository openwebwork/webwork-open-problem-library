DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");
Context()->constants->add( a=>3.21, b=>1.777 );
# this means that student answers are
#    not reduced to the numerical value
#    specified in the Context
Context()->flags->set( formatStudentAnswer=>'parsed' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,7,1);
$p = random(2,4,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
\( f(x) = (ax^$p + b)^$r \)
$BR
Assume that \( a \) and \( b \) are constants.

$PAR
\( f'(x) = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$r*(a*x^($p) + b)^($r-1)*($p*a*x^($p-1))" )->cmp() );

$xp1 = ( $p == 2 ) ? 'x' : 'x^{' . ($p-1) . '}';
$rp = $r*$p;
$r1exp = ($r == 2) ? '' : "^{" . ($r-1) . "}";

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ f'(x)  =  $r (a x^$p + b)$r1exp ($p a $xp1)  
  = $rp a $xp1 (a x^$p + b)$r1exp. \]

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
