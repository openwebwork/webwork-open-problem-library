DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");
Context()->flags->set( limits=>[0.1,5] );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$p = random(3,9,1);
$b = random(2,7,1);
$a = random(1,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
\( z(x) = \root $p\of{$b^{x} + $a} \)

$PAR
\( z'(x) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "(1/$p)*($b^(x)+$a)^((1-$p)/$p)*(ln($b)*$b^(x))" )->cmp() );

$p1 = ($p - 1) . "/$p";

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ z'(x) = \frac{1}{$p} ($b^x + $a)^{-$p1} (\ln($b) $b^{x}) \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
