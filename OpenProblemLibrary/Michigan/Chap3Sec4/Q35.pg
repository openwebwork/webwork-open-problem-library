DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,7,1);
$p = random(2,7,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
 
\(\displaystyle y={e^{$r x}\over x^{$p}+1} \)

$PAR
\( {dy\over dx} = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "($r*e^($r*x)*(x^($p)+1) - " .
              "$p*x^($p-1)*e^($r*x))/(x^($p)+1)^2" )->cmp() );

$xp1 = ( $p == 2 ) ? 'x' : 'x^{' . ($p-1) . '}';

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ \frac{dy}{dx} = \frac{ $r e^{$r x} (x^$p + 1) - 
  $p $xp1 e^{$r x}}{(x^$p+1)^2} \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
