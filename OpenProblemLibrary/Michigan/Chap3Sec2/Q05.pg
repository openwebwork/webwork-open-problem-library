DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,15,1);
$pow = random(2,9,1);
$b = random(2,9,1);
$c = random(1,25,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( y = $a x^$pow + $b^x + $c \).

$PAR
\( {dy\over dx} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$a*$pow*x^($pow-1) + ln($b)*$b^x" )->cmp() );

$ap = $a*$pow;
$xp = ( $pow == 2 ) ? 'x' : "x^{" . ($pow-1) . "}";

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ {dy\over dx} = $ap $xp + \ln($b)\cdot $b^x \]
END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
