DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");
Context()->variables->are( t=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,9,1);


$answer = Compute("e^(t+$a)");

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( f(t)=e^{t+$a} \)

$PAR
answer = \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS( $answer -> cmp(limits=> [-$a+2,-$a+3]) );


Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that \( e^{t+$a} = e^t e^{$a} \).  Since \( e^{$a} \) is just a
constant, 

\[ f'(t) = e^{$a} e^t = e^{t+$a}. \]
END_SOLUTION
Context()->normalStrings;


;
