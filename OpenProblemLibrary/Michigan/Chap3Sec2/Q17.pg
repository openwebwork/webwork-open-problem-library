DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,15,1);
$b = random(2,15,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( f(x) = x^{$a} + {$b}^x \).

$BR $BR
\( f'(x) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$a*x^($a-1) + ln($b)*($b)^x" )->cmp() );

$xa = ( $a == 2 ) ? 'x' : 'x^{' . ($a-1) . '}';

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));

\[ f'(x) = $a $xa + \ln($b)\cdot $b^x \]
END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
