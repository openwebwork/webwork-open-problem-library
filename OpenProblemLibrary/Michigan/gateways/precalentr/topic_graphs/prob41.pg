TEXT();
$showPartialCorrectAnswers = 1;

$gr = init_graph(-4,-8,4,8,'axes'=>[0,0],'grid'=>[1,1]);
$gr->lb('reset');

add_functions($gr, 
	      '(x-1)^3 for x in <-4,4> using color:blue and weight:2');
$gr->stamps( closed_circle(0,-1,'blue') );
$gr->stamps( closed_circle(1,0,'blue') );
$gr->lb( new Label(0.35,-1.25,'P','black','center','center') );
$gr->lb( new Label(1,0.75,'Q','black','center','center') );
$gr->lb( new Label(1.75,5.5, 'y = (x-1)^3', 'black', 'center', 'center') );

$ans = "\((0, -1)\)";
$gwprob = new_multiple_choice();
$gwprob->qa('What are the coordinates of the point \(P\)?',
	    $ans);
$gwprob->extra("\((-1, 0)\)",
	"\((1, 0)\)",
	"\((0, 1)\)",
	"\((1, -1)\)");

BEGIN_TEXT

${BCENTER}
