add_functions($gr,
	      "(x^2-4)*(x+1) for x in <-4,4> using color:blue and weight:2");
$gr->lb( new Label(1,5,'y=(x^2-4)(x+1)','black','center','center') );
$gr->stamps( closed_circle( -2, 0, 'blue' ) );
$gr->stamps( closed_circle( -1, 0, 'blue' ) );
$gr->stamps( closed_circle( 2, 0, 'blue' ) );
$gr->stamps( closed_circle( 0, -4, 'blue' ) );
$gr->lb( new Label( -2.25,0.5,'P','black','center','center') );
$gr->lb( new Label( -0.75,0.5,'Q','black','center','center') );
$gr->lb( new Label( 0.35,-4,'R','black','center','center') );
$gr->lb( new Label( 2.25,-0.65,'S','black','center','center') );

$ans = "\((-2, 0)\)";
$gwprob = new_multiple_choice();
$gwprob->qa('What are the coordinates of the point \(P\)?',$ans);
$gwprob->extra("\((-1, 0)\)",
	"\((0, -2)\)",
	"\((0, -1)\)",
	"\((-4, 0)\)");

