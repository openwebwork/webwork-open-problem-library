TEXT();
$showPartialCorrectAnswers = 1;

$ans = "\(0.001 > x\)";
$gwprob = new_multiple_choice();
$gwprob->qa('Which of the following inequalities describes all ' .
	    '\(x\)-values which are less than 0.001?',
	    $ans);
$gwprob->extra("\(0\le x\le 0.001\)",
	"\(x\le 0.001\)",
	"\(-\infty>x<0.001\)",
	"\(0.001<x<\infty\)");

BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT

ANS(radio_cmp( $gwprob->correct_ans() ));

