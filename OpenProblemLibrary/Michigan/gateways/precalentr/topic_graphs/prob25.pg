	   "extraAnswerEvaluators.pl", # get equation_cmp
           );

TEXT();
$showPartialCorrectAnswers = 1;

$ans = "2 only";
$gwprob = new_multiple_choice();
$gwprob->qa('Which of the following describes the same region as ' .
	    '\(x\) is in \((-\infty,-1]\)?',
	    $ans);
$gwprob->extra("1 only",
	"3 only",
	"4 only",
	"1 and 2");

BEGIN_TEXT

\{ $gwprob->print_q() \}
$BR
1. \(x < 0\).
$BR
2. \(x \le -1\).
$BR
3. \(x < -1\).
$BR
4. \(-x\).
$PAR
\{ $gwprob->print_a() \}

END_TEXT

ANS(radio_cmp( $gwprob->correct_ans() ));

