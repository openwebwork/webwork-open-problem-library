TEXT();
$showPartialCorrectAnswers = 1;

$ans = "2 and 4";
$gwprob = new_multiple_choice();
$gwprob->qa('Which of the following indicates that \(x\) is negative?',
	    $ans);
$gwprob->extra("1 only",
	"1, 2, and 3",
	"1, 2, and 4",
	"2 and 3");

BEGIN_TEXT

\{ $gwprob->print_q() \}

$BR
1. \( -x \).
$BR
2. \( x < 0 \).
$BR
3. \( x \) is in \((-\infty, 0]\).
$BR
4. \( x \) is in \((-\infty, 0)\).
$PAR

\{ $gwprob->print_a() \}

END_TEXT

ANS(radio_cmp( $gwprob->correct_ans() ));

