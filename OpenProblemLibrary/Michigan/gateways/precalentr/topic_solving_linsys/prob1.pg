TEXT();
$showPartialCorrectAnswers = 1;

$ans = "\(-1\)";
$gwprob = new_multiple_choice();
$gwprob->qa('Suppose that \(x+y=1\) and \(x+2y=3.\)  What is \(x\)?',
	    $ans);
$gwprob->extra(" \( 2 \) ",
	" \( 1 \) ",
	" \( -{1\over 3} \) ");
$gwprob->makeLast("There is no solution for \(x\).");


BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT

ANS(radio_cmp( $gwprob->correct_ans() ));

