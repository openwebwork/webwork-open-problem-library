TEXT();
$showPartialCorrectAnswers = 1;

Context('Numeric');
Context()->variables->are( c=>'Real',  k=>'Real',  x=>'Real');
Context()->variables->set( c=>{limits=>[0,3]}, k=>{limits=>[-1,1]}, x=>{limits=>[-3,2]});

# Context()->flags->set( limits=>[[0,3],[-1,1],[-3,2]] );

$ans = "(2*k)*x*e^(k*x^(2) - c)";

# for information about tutorial cgi, contact the UMich repository owner
