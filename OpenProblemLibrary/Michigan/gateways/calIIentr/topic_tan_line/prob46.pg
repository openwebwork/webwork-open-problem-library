## DBsubject(WeBWorK)
## DBchapter(Calculus gateway)
## DBsection(Calculus II entrance)
## Static(1)
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "extraAnswerEvaluators.pl",
  "PGcourse.pl"
);

TEXT();
$showPartialCorrectAnswers = 1;

$ans = " y=(1/3)*(x - 3*pi/2) ";
# for information about tutorial cgi, contact the UMich repository owner
# $tut = htmlLink("http://[local location of tutorial cgi]/gwtanlinetut?pnum=46", "this tutorial page", "");

BEGIN_TEXT
If \(y = \cos({x+9\pi\over3})\), find the equation of the tangent
line to the curve at \(x = 3\pi/2\).
$BR
Tangent line:  \{ans_rule(55)\}
END_TEXT

ANS(equation_cmp($ans, vars=>['x','y'], relTol=>.01,
		    numPoints=>5, limits=>[[0,10],[0,10]]));

# formatting macros used for the solution
$bsbox = MODES('TeX' => '\par{\bf Solution outline:} ',
               'Latex2HTML' => '\par{\bf Solution outline:} ',
               'HTML' => '<div class="gwSoln"><b>Solution outline:</b>');
$esbox = MODES('TeX' => '\par',
               'Latex2HTML' => '\par',
               'HTML' => '</div>');

$bcode = MODES('TeX' => '\tt', 'Latex2HTML' => '\tt', 'HTML' => '<code>');
$ecode = MODES('TeX' => '\rm', 'Latex2HTML' => '\rm', 'HTML' => '</code>');

SOLUTION($bsbox,"The correct answer to this problem is",
	"${bcode}$ans$ecode",
	"by using the derivative to find the slope of",
	"the tangent line and the point given.",$esbox);
# 	"as shown on $tut.", $esbox);

ENDDOCUMENT();
