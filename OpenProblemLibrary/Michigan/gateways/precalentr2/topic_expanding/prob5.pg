## DESCRIPTION
## Michigan precalculus gateway problem: topic expanding
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$a = random(2,5,1);
$b = ( $a > 3 ) ? random(2,3,1) : random(4,5,1);

$ab = $a*$b;
$abp1 = $a*$b + 1;
$apb = $a + $b;
$abmb = $b*($a - 1);
$am1 = $a - 1;

$ans = "\(-$b x^2 + $abp1 x - $a\)";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \(($a-x)($b x-1)\)?",
	    $ans);
$gwprob->extra("\(-$b x^2 - $apb x - $a\)",
	"\($b x^2 - $abp1 x + $a\)",
	"\($abmb x - $am1\)" );

$gwprob->makeLast( "None of these expressions are equivalent.");



Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We expand the multiplied terms by distributing:
\[\begin{aligned}
($a-x)($b x-1) &= $a($b x - 1) - x($b x - 1)\\
  &= $ab x - $a - $b x^2 + x\\
  &= -$b x^2 + $abp1 x - $a.
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
