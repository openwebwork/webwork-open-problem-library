ANS(radio_cmp( $area->correct_ans() ) );
ANS(radio_cmp( $convf->correct_ans() ) );
ANS(radio_cmp( $convh->correct_ans() ) );
ANS(radio_cmp( $convk->correct_ans() ) );
ANS(radio_cmp( $convp->correct_ans() ) );
