DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

Context("Numeric");
Context()->variables->are(t=>"Real");
Context()->flags->set(limits=>[0.01,5]);
Context()->flags->set(reduceConstants=>0);

$showPartialCorrectAnswers = 1;

$r = random(1,3,1);
$a = random(1,4,1);
$ta = 2*$a;
if ( random(0,1,1) ) {
    $tr1 = 2*$r + 3;
    $func = Compute( "$a*t^($r)*sqrt(t) + 1/(t*sqrt(t))" );
    $afunc = FormulaUpToConstant( "($ta/$tr1)*t^($tr1/2) - 2/(t^(1/2)) + C" );
} else {
    $tr1 = 2*$r - 1;
    $func = Compute( "$a*t*sqrt(t) + 1/(t^($r)*sqrt(t))" );
    $afunc = FormulaUpToConstant( "($ta/5)*t^(5/2) - " .
                                  "2/($tr1*t^($tr1/2)) + C" );
}
 
TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT

Find:
\( \int\, $func\, dt = \)
\{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS($afunc->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

By considering \(\sqrt{t} = t^{1/2}\) and combining the powers
of \(t\) in each term, we get 
\[ \int\, $func\, dt = $afunc. \]


END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
