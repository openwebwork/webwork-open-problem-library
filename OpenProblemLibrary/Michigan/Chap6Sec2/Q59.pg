DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

Context("Numeric");
Context()->variables->are(y=>"Real");
Context()->flags->set(reduceConstants=>0);

$showPartialCorrectAnswers = 1;

$r = random(2,4,1);
$func = Compute("((y^($r) - 1)/y)^2");
$trm1 = 2*$r-1;
$rm1 = $r - 1;
if ( $r == 2 ) {
    $afunc = FormulaUpToConstant("(1/3)*y^(3) - 2*y - " .
		  	         "1/y + C");
} else {
    $afunc = FormulaUpToConstant("(1/$trm1)*y^($trm1) - (2/$rm1)*y^($rm1) - " .
		  	         "1/y + C");
}
 
TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT

Find:
\( \int\, $func\, dy = \)
\{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS($afunc->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

By expanding the square, 
\[ \int\, $func\, dy = $afunc. \]

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
