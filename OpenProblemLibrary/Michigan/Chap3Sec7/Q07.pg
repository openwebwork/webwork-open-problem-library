DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");
Context()->variables->are(
	x => [ 'Real', limits => [0, 1] ],
	y => [ 'Real', limits => [1, 2] ]
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,5,1);
$a = random(2,9,1);
$b = random(1,15,1);

$rm1 = $r - 1;

$mFx = Formula("1 - $r x^($rm1) y")->reduce;
$Fy = Formula("x^($r) - $a")->reduce;
$dydx = $mFx/$Fy;

Context()->texStrings;
BEGIN_TEXT
Find \( dy/dx \) in terms of \( x \) and \( y \) 
if \( x^{$r} y - x - $a y - $b =0 \).
$BR $BR
\( \displaystyle \frac{dy}{dx} = \)
\{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;

ANS($dydx->cmp);

$rexp = ($r==2) ? '' : '^{' . ($r-1) . '}';

Context()->texStrings;
BEGIN_SOLUTION
We differentiate implicitly with respect to \(x\).  
This gives
\[
$r x$rexp y - x^{$r} \, \frac{dy}{dx}
- 1 - $a \, \frac{dy}{dx} = 0,
\]
or
\[
($Fy) \, \frac{dy}{dx} = $mFx,
\]
and so
\[
\frac{dy}{dx} = \frac{1 - $r x$rexp y}{x^{$r} - $a}.
\]
END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
