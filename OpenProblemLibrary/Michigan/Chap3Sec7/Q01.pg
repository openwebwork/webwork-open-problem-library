DOCUMENT();
loadMacros(
	'PGstandard.pl',
	'MathObjects.pl'
);
 
Context('Numeric')->variables->are(
	x => [ 'Real', limits => [1, 2] ],
	y => [ 'Real', limits => [1, 2] ]
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);
$a = random(2,15,1);
$a++ if ( $a == 4 || $a == 9 );

$rm1 = $r - 1;
($n, $d) = reduce($r, 2);

$Fx = Formula("$n x^($rm1)")->reduce;
$Fy = Formula("$d y")->reduce;
$dydx = -($Fx/$Fy);


Context()->texStrings;
BEGIN_TEXT
Find \( dy/dx \) in terms of \( x \) and \( y \)
if \( x^{$r} + y^2 = \sqrt{$a} \).
$BR $BR
\( \displaystyle \frac{dy}{dx} = \)
\{ ans_rule(15) \}
END_TEXT
Context()->normalStrings;

ANS($dydx->cmp);

$r1exp = ( $r==2 ) ? '' : '^{' . ($r-1) . '}';

$r2 = $r/2;
if ( $r2 == int($r2) ) {
    $r2 = ( $r2 == 1 ) ? '' : $r2;
    $simp = "= -\frac{ $r2 x$r1exp}{y}";
} else {
    $simp = '';
}

Context()->texStrings;
BEGIN_SOLUTION
We differentiate implicitly both sides of the equation with respect to 
\(x\).
\[
$r x$r1exp + 2 y\frac{dy}{dx}=0,
\]
so
\[
\frac{dy}{dx}=-\frac{$r x$r1exp}{2y} $simp
 \]
END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
