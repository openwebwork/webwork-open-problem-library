DOCUMENT();

loadMacros(
	'PGstandard.pl',
	'MathObjects.pl'
);
 
Context("Numeric")->variables->are(
	x => [ 'Real', limits => [1, 2] ],
	y => [ 'Real', limits => [1, 2] ]
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,7,1);
$a = random(2,9,1);

$dydx = Formula(
	"y( $a - x*ln(y) )
	/ ( x (x + $r y^($r)) )"
)->reduce;

Context()->texStrings;
BEGIN_TEXT
Find \( \displaystyle \frac{dy}{dx} \)
in terms of \( x \) and \( y \) 
if \( x \ln y + y^{$r} = $a \ln x \).
$BR $BR
\( \displaystyle \frac{dy}{dx} = \)
\{ ans_rule(65) \}
END_TEXT
Context()->normalStrings;

ANS($dydx->cmp);

$rexp = ( $r==2 ) ? '' : '^{' . ($r-1) . '}';

Context()->texStrings;
BEGIN_SOLUTION
We differentiate implicitly both sides of
the equation with respect to \(x\).
\[
\ln y + \frac xy \, \frac{dy}{dx}
+ $r y$rexp\frac{dy}{dx} = \frac{$a}{x},
\]
so 
\[ \left( \frac{x}{y} + $r y$rexp \right) \,
\frac{dy}{dx} = \frac{$a}{x} - \ln y, \]
and thus
\[
\frac{dy}{dx}
= \frac{\frac{$a}{x} - \ln y}{\frac{x}{y} + $r y$rexp}
= $dydx.
\]
END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version');

ENDDOCUMENT();
