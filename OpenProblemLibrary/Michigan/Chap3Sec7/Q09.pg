DOCUMENT();
loadMacros(
	'PGstandard.pl',
	'MathObjects.pl'
);
 
Context('Numeric')->variables->are(
	x => [ 'Real', limits => [1, 2] ],
	y => [ 'Real', limits => [1, 2] ]
);
Context()->constants->add(
	a => '3.113',
	b => '7.824',
	c => '11.78'
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,5,1);
$s = random(2,5,1);

($n, $d) = reduce($r, $s);
$rm1 = $r - 1;
$sm1 = $s - 1;
$Fx = Formula("$n a x^($rm1)")->reduce;
$mFy = Formula("$d b y^($sm1)")->reduce;
$dydx = $Fx/$mFy;

Context()->texStrings;
BEGIN_TEXT
Find \( dy/dx \) in terms of \( x \) and \( y \) 
if \( a x^{$r} - b y^{$s} = c^{$r} \).
Assume that \( a \), \( b \) and \( c \) are constants.
$BR $BR
\( \displaystyle \frac{dy}{dx} = \) \{ ans_rule(15) \}
END_TEXT
Context()->normalStrings;

ANS($dydx->cmp);

$rexp = ( $r==2 ) ? '' : '^{' . ($r-1) . '}';
$sexp = ( $s==2 ) ? '' : '^{' . ($s-1) . '}';
if ( $r/$s == int($r/$s) ) {
    $fr = "\frac{" . ($r/$s) . " a x$rexp}{b y$sexp}";
} elsif ( $s/$r == int($s/$r) ) {
    $fr = "\frac{ a x$rexp}{" . ($s/$r) . "b y$sexp}";
} else {
    $fr = "\frac{$r a x$rexp}{$s b y$sexp}";
}

Context()->texStrings;
BEGIN_SOLUTION
Differentiating both sides, 
\[ $r a x$rexp - $s b y$sexp {dy\over dx} = 0, \]
so 
\[ {dy\over dx} = $fr. \]
END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
