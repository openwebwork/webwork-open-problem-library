loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Vector");
Context()->flags->set( ijk=>1 );
Context()->constants->set(
  i => {TeX => "\,\mathit{\vec i}"},
  j => {TeX => "\,\mathit{\vec j}"},
  k => {TeX => "\,\mathit{\vec k}"},
);
$showPartialCorrectAnswers = 1;

$a = random(1,5,1);
$b = random(1,5,1);
$c = random(1,5,1);
$f = Compute( "$a*x*e^(y/$b)*sin($c*z)" )->reduce();
$fx = $f->D('x');
$fy = $f->D('y');
$fz = $f->D('z');
$grad = Vector( "$fx i + $fy j + $fz k" );

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

Find the gradient of the function
\( f(x,y,z) = $f \).

$PAR
\(\mbox{grad}\,f = \) \{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;

ANS($grad->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We have \( f_x = $fx\), \(f_y = $fy\), and
\(f_z = $fz\). Thus
\[
\mbox{grad} f = $grad.
\]

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
