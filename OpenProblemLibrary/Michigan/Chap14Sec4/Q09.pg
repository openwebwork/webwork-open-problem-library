DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"MathObjects.pl",
# "parserNumberWithUnits.pl",
# "parserFormulaWithUnits.pl", 
# "parserFormulaUpToConstant.pl",
# "PGcourse.pl",
);

Context("Vector2D");
Context()->variables->add( r=>'Real', t=>'Real' );
Context()->flags->set( ijk=>1 );
$showPartialCorrectAnswers = 1;

$whicht = random(0,1,1);
$a = random(1,5,1);
$tr = $whicht ? Compute("sin($a*t)")->reduce() : Compute("cos($a*t)")->reduce();
$r = random(1,3,1);
$f = Compute("r^($r)*$tr");
$rm1 = $r-1;
$fr = Compute("$r*r^($rm1)*$tr")->reduce();
$ft = $whicht ? Compute("r^($r)*$a*cos($a*t)")->reduce() :
    Compute("-1*r^($r)*$a*sin($a*t)")->reduce();

$gr = Vector( ($fr, $ft) );

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

Find the gradient of the given function. Assume the variables
are restricted to a domain on which the function is defined.
\[ f(r,t) = $f. \]

$PAR
\(\nabla f = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS($gr->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Since the partial derivatives are
\[
f_r = $fr\quad \mbox{and}\quad f_t = $ft,
\]
we have
\[
\nabla f = $gr.
\]

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
