DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a  = random(1,5,1);
$f  = random(1,5,1);
$fp = random(1,5,1);
$h  = random(1,5,1);
$hp = random(1,5,1);

@q = ( "If \( G(z) = F(z)\cdot H(z) \), then \( G'($a) = \) " .
       ans_rule(35),
       "If \( G(w) = F(w)/H(w) \), then \( G'($a) = \) " .
       ans_rule(35) );

Context()->texStrings;
BEGIN_TEXT

Let \( F($a) = $f, F'($a) = $fp, H($a) = $h, H'($a) = $hp \).
$BR
\{ OL( @q ) \}

END_TEXT
Context()->normalStrings;

ANS(Compute( "$f*$hp + $fp*$h" )->cmp() );
ANS(Compute( "($fp*$h - $f*$hp)/($h*$h)" )->cmp() );

$gpa1 = $f*$hp + $fp*$h;
$gpa2 = ($fp*$h - $f*$hp)/($h*$h);
$gpa2r = round(10000*($gpa2))/10000;
$gpa2ans = ( $gpa2 == int($gpa2) ) ? "= $gpa2" : "\approx $gpa2r";

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

${BBOLD}A.$EBOLD
By the product rule, 
\( G'($a) = F'($a)\cdot H($a) + F($a)\cdot H'($a)
          = $fp\cdot $h + $f\cdot $hp = $gpa1 \).

$PAR
${BBOLD}B.$EBOLD
By the quotient rule,
\[ G'($a) = \frac{F'($a)\cdot H($a) - F($a)\cdot H'($a)}
                 {H($a)^2} 
          = \frac{$fp\cdot $h - $f\cdot $hp}{$h^2} $gpa2ans. \]

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
