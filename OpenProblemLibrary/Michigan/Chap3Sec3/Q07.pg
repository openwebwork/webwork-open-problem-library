DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");
Context()->flags->set( limits=>[0.1,2] );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);
$p = random(2,9,1);
$root = ($p == 2) ? "\sqrt{x}" : "\root $p\of{x}";
$b = random(2,9,1);
$roote = "x^(1/$p)";

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( f(x) \), below.  It may be to your
advantage to simplify  first.  
$BR
\(\displaystyle f(x) = (x^$r - $root) $b^x \)

$PAR
\( f'(x) = \) \{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "($r*x^($r-1) - (1/$p)*x^(-1+1/$p))*$b^x + " .
              "(x^$r - ($roote))*ln($b)*$b^x" )->cmp() );

$xr = ( $r == 2 ) ? 'x' : 'x^{' . ($r-1) . '}';
$p1 = $p-1 . "/$p";

Context()->texStrings;

BEGIN_SOLUTION

\[ f'(x) = 
  ($r $xr - \frac{1}{$p} x^{-$p1}) $b^x + (x^$r - $root) \ln($b) $b^x \]

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
