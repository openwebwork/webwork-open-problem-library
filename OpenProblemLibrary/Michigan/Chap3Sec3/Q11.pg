DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);
$b = random(1,9,1);
$b = "e" if ( $b == 1 );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( f(x) \), below.  It may be to your
advantage to simplify  first.
$BR
\[\displaystyle f(x) = \frac{x^$r}{$b^x} \]

$PAR
\( f'(x) = \) \{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "($r*x^($r-1)*($b^x) - (x^$r)*ln($b)*($b^x))/($b^(2*x))" )->cmp() );

$xr = ( $r == 2 ) ? 'x' : 'x^{' . (x-1) . '}';
$lb = ( $b eq 'e' ) ? '' : "\ln($b)";

Context()->texStrings;
BEGIN_SOLUTION
$PAR SOLUTION $PAR

\[ f'(x) = \frac{($r $xr)($b^x) - (x^$r) $lb ($b^x)}{$b^{2x}}. \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
