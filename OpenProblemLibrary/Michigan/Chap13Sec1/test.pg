Context("Vector2D");
$showPartialCorrectAnswers = 1;

$v = 3*i + 2*j;
# $v = Compute("<3,2>");

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

\($v\)
$PAR
Parallel: \{ ans_rule(25) \}
$BR
Perpendicular: \{ ans_rule(25) \}

END_TEXT
Context()->normalStrings;

ANS($v->cmp( checker=>sub {
    my ($correct, $student, $ansHash) = @_;
    return $student->isParallel($correct);
} ) );

ANS($v->cmp( checker=>sub {
    my ($correct, $student, $ansHash) = @_;
    return $student.$correct == 0;
} ) );


