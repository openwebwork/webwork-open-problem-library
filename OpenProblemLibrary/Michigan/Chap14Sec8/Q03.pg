DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Point");
Context()->strings->add( none=>{} );

$showPartialCorrectAnswers = 1;

$whichArg = random(0,5);
if ( $whichArg == 0 ) {
    $arg = "x^2 + y^2";
    $ans = String("none");
    $expl = "This function is differentiable at all points.";
} elsif ( $whichArg == 1 ) {
    $arg = "sqrt(x^2 + y^2)";
    $ans = List( Point("(0,0)") );
    $expl = "This function is not differentiable at \((0,0)\).";
} elsif ( $whichArg == 2 ) {
    $arg = "x/(x^2 + y^2 + 1)";
    $ans = String("none");
    $expl = "This function is differentiable at all points.";
} elsif ( $whichArg == 3 ) {
    $arg = "y/(x^2 + y^2 + 1)";
    $ans = String("none");
    $expl = "This function is differentiable at all points.";
} elsif ( $whichArg == 4 ) {
    $arg = "x/(x^2 + y^2)";
    $ans = List( Point("(0,0)") );
    $expl = "This function is not differentiable at \((0,0)\).";
} elsif ( $whichArg == 5 ) {
    $arg = "y/(x^2 + y^2)";
    $ans = List( Point("(0,0)") );
    $expl = "This function is not differentiable at \((0,0)\).";
}
$func = Compute( "e^(-$arg)" );

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

List the points in the \( xy \)-plane, if any,
at which the function \( z = $func \) is not differentiable.
$PAR
points = \{ ans_rule(35) \}
$BR
${BITALIC}(If there is more than one point, give them as a
comma-separated list, e.g., ${BBOLD}(1,2),(3,4)$EBOLD; if the
function is differentiable everywhere, enter the word
${BBOLD}none$EBOLD.)$EITALIC

END_TEXT
Context()->normalStrings;

ANS($ans->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

$expl

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
