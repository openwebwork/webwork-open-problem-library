Context("Vector");
Context()->flags->set( ijk=>1 );

Context()->constants->set(
  i => {TeX => "\,\mathit{\vec i}"},
  j => {TeX => "\,\mathit{\vec j}"},
  k => {TeX => "\,\mathit{\vec k}"},
);

$showPartialCorrectAnswers = 1;

@v1 = ( list_random(-1,1), list_random(-1,1), list_random(-1,1) );
@v2 = ( list_random(-1,1), list_random(-1,1), list_random(-1,1) );
if ( $v1[0] == $v2[0] && $v1[1] == $v2[1] && $v1[2] == $v2[2] ) {
    $v2[1] = -1*$v1[1];
    $v2[2] = -1*$v1[2];
}
$vv1 = Vector( @v1 );
$vv2 = Vector( @v2 );

$v1dv2 = $vv1.$vv2;

$angle = Compute("arccos($v1dv2/3)");

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

Compute the angle between the vectors
\( $vv1 \) and \( $vv2 \).

$PAR
angle = \{ ans_rule(35) \} radians
$BR
${BITALIC}(Give your answer in radians, not degrees.)$EITALIC

END_TEXT
Context()->normalStrings;

ANS($angle->cmp() );

## this is kludgy.  there should be a routine to do this
##    for us.
sub redfrac {
    my ( $n, $d ) = @_;
    ( $n, $d ) = reduce( $n, $d );

    if ( $n == 1 && $d == 1 ) {
        return 1;
    } elsif ( $n == 1 ) {
	return "\frac{1}{$d}";
    } elsif ( $d == 1 ) {
        return "$n";
    } else {
	return "\frac{$n}{$d}";
    }
}

$fr = redfrac( $v1dv2, 3 );
$angler = round($angle*100)/100;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( \cos \theta = \frac{ ($vv1)\cdot($vv2) }{ ||$vv1|| ||$vv2|| }
   = \frac{$v1dv2}{3}\).

So, \(\theta=\arccos({$fr}) \approx $angler\) radians.

END_SOLUTION
Context()->normalStrings;


;
