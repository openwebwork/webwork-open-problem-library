##DESCRIPTION
##  Algebra problem: Solve a simple exponential equation
##ENDDESCRIPTION

##KEYWORDS('algebra', 'exponential', 'exponential equation')
## DBsubject(Algebra)
## DBchapter(Exponential and logarithmic expressions and functions)
## DBsection(Exponential and logarithmic equations)
## Level(2)
## Author(K. Andrew Parker)
## Institution(CUNY City Tech)
## Language(en)

########################################################################

DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGML.pl",
   "contextFraction.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");
Context()->flags->set(reduceConstants=>0, reduceConstantFunctions=>0);
Context()->variables->are(x=>Real);

$base = random(2,5,1);
$x = random(3,5,1);
$result = $base**$x;

$a = random(2,5,1);
$b = non_zero_random(-3,3,1);
$exp = Formula("$a x + $b")->reduce;
$ans = $x - $b;

Context("LimitedFraction");
Context()->flags->set(reduceConstants=>0, reduceConstantFunctions=>0);
Context()->variables->are(x=>Real);

$ans = Fraction($ans,$a)->reduce;

##############################################################
#
#  Text
#
#

BEGIN_PGML

Solve the exponential equation by using the property that [` b^x = b^y `] means that [` x = y `] whenever [` b > 0 `] and [` b \neq 1 `].

>> [`` [$base]^{[$exp]} = [$result] ``] <<

[` x = `] [_____]{$ans}

END_PGML

COMMENT("Funded by US DoE Title V: Opening Gateways grant.");

ENDDOCUMENT();        
