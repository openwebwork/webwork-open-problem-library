###########################
#  Setup

Context("Complex");

$a = random(2,9,1);
do { $b = random(2,9,1); } until ($b != $a);
do { $c = random(2,9,1); } until (($c != $a) and ($c != $b));

Context()->variables->add(xi => ["Real", TeX=>"\xi"]);

$answer1 = Compute("-i*xi^3")->reduce;
$answer2 = Compute("xi^4")->reduce;
$answer3 = Compute("$a + $b i xi - $c xi^2")->reduce;

