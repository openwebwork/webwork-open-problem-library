if ( $chooser == 0) {
    $equation = Formula(" (x-$coeff1)/$coeff3 ");
    $popup = PopUp(["?","yes", "no"], "yes");
} elsif ( $chooser == 1 ) {
   $equation = Formula("(x-$coeff1)/$coeff3 ");
   $popup = PopUp(["?","yes", "no"], "yes");
} elsif ( $chooser == 2 ) {
   $equation = Formula(" (x-$coeff1)/$coeff3  ");
   $popup = PopUp(["?","yes", "no"], "yes");

} else {
   $equation = Formula(" (x-$coeff1)/$coeff3 ");
   $popup = PopUp(["?","yes", "no"], "yes");
}

 
