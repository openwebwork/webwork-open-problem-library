$a = random(240,245,1);
$b = random(250,255,1);
$c = random(240, 255,1);

Context("Numeric");
Context()->flags->set(
  tolerance => 0.25,
  tolType => "absolute",
);
$ans1 = Compute($b - $a);
$ans2 = Compute(($c -$a)/3 );


###########################
