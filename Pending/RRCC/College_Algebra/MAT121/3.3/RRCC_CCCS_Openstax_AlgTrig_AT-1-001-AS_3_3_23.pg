#  Initialization

DOCUMENT();

loadMacros(
"PGgraphmacros.pl",
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"parserPopUp.pl",
"contextLimitedPoint.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###########################
#  Setup

$gr = init_graph(-10,-10,10,10,
axes=>[0,0],
grid=>[20,20],
size=>[400,400]
);

$a = random(1,2,1);
$b = random(3,4,1);
$d = random(1,3,1);

add_functions($gr, "-(1/3)*x**3+(($b+$a)/2)*x**2-$a*$b*x for x in <-10,10> using color:blue and weight:2");


$refreshCachedImages=1;

Context("Interval");
$ans1=Interval("($a,$b)");
$ans2=Interval("(-infinity,$a)U($b,infinity)");


Context("Numeric");
Context()->flags->set(
  tolerance => 0.25,
  tolType => "absolute",
);
$ans3= Compute(-(1/3)*$b**3+(($b+$a)/2)*$b**2-$a*$b*$b);
$ans4= Compute(-(1/3)*$a**3+(($b+$a)/2)*$a**2-$a*$b*$a);

$popup1 = PopUp(
  ["?","x","y"],
  "y",
);


###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the intervals where the function \( y=f(x) \), whose graph is given below, is increasing and where it is decreasing and identify the local maximum and local minimum.
$BR
$BR
$BCENTER
\{ image( insertGraph($gr), 
width=>200,height=>200,tex_size=>800 ) \}
$BR
(Click on graph to enlarge)
$ECENTER
END_TEXT
Context()->normalStrings;

BEGIN_PGML

>>Increasing: [______]{$ans1}[@ AnswerFormatHelp("intervals") @]*<<

>>Decreasing: [______]{$ans2}[@ AnswerFormatHelp("intervals") @]*<<

>>Local maximum: [______]{$popup1} [` = `] [______]{$ans3}[@ AnswerFormatHelp("numbers") @]*<<

>>Local minimum: [______]{$popup1} [` = `] [______]{$ans4}[@ AnswerFormatHelp("numbers") @]*<<
END_PGML

