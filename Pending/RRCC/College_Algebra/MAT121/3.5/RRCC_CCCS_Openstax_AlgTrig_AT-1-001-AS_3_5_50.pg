###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserPopUp.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


###########################
#  Setup

Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');

$a = non_zero_random(2,10,1);
$b = random(2,4,1);

$f = Formula("(x-$a)^$b")->reduce;

$ans1 = Formula("(-x-$a)^$b")->reduce;
$ans2 = Formula("-(x-$a)^$b")->reduce;

$popup = PopUp(
  ["?","odd","even","neither"],
  "neither",
);
###########################
#  Main text

BEGIN_PGML
Let [``f(x) = [$f]``]. Find [``f(-x)``] and [``-f(x)``]. Use them to determine whether or not [``f(x)``] is even, odd, or neither.

[` f(-x) = `] [_______________]{$ans1} [@ AnswerFormatHelp("formulas") @]*

[` -f(x) = `] [_______________]{$ans2} [@ AnswerFormatHelp("formulas") @]*

Is [``f(x)``] odd, even, or neither?
[@ $popup->menu() @]*

END_PGML


############################

#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( $popup->cmp() );

