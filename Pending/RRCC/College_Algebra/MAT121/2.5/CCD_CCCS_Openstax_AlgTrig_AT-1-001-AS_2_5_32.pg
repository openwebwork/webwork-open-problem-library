$b=non_zero_random(-3,5);
$c=non_zero_random(-5,5);

$g=Compute("$a*x^2")->reduce;
$h = Compute("$b*x")->reduce;
$f=Formula("$a*x^2+$b*x+$c")->reduce;

$ans = ($b)**2-4*$a*$c;


