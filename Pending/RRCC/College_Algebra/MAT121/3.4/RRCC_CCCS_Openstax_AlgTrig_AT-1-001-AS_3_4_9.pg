$b = non_zero_random(1,9,1);

Context("Numeric");
Context()->variables->set(x=>{limits=>[$b+1,$b+4]});
Context()->noreduce('(-x)-y','(-x)+y');

$f = Compute("$a*x^2")->reduce;
