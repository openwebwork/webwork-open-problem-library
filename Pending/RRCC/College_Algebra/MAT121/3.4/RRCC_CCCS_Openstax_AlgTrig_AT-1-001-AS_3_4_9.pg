$ans3 = Compute("($a*x^2)*(sqrt(x-$b))")->reduce();
$ans4 = Compute("($a*x^2)/(sqrt(x-$b))")->reduce();

Context("Interval");
$ans5 = Compute("[$b,infinity)");
$ans6 = Compute("[$b,infinity)");
$ans7 = Compute("[$b,infinity)");
$ans8 = Compute("($b,infinity)");

