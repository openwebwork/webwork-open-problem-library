Context("Matrix");

$A = Matrix([
[random(-9,5,1),random(-5,5,1)],
[random(-5,9,1),random(-5,5,1)],
]);

$B = Matrix([
[random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1)],
]);

$answer1 = $A * $B;
$answer2 = $B * $A;

##################
#  Main text


BEGIN_PGML
Suppose
>> [``A = [$A] \ \ \mbox{and} \ \ B = [$B]. ``] <<
END_PGML

BEGIN_TEXT
$BR
Find the product \(AB\) using technology at this 
\{ htmlLink( "javascript:windowpopup();", "link" ) \}. 
END_TEXT

BEGIN_PGML
[` AB = `][_____]*{$answer1} [@ AnswerFormatHelp("matrices") @]*
  
  
Find the product [`BA`] using technology.

[` BA = `][_____]*{$answer2} [@ AnswerFormatHelp("matrices") @]*

END_PGML


ENDDOCUMENT();
