##################
#  Initialization

DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PGstandard.pl",
  "AnswerFormatHelp.pl",
  "PGML.pl",
  "PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Matrix");

$a=random(-5,5);
$b=random(-5,5);
$c=random(-5,5);
$d=random(-5,5);
$e=random(-5,5);
$f=random(-5,5);

#####
#commented out because I couldn't figure out how to get the vertical line in an augmented matrix into PGML 
#$A = Matrix([
#[$a,$b,$c],
#[$d,$e,$f],
#]);
#####

Context()->variables->add(x1 => ["Real", TeX=>"x"], x2 => ["Real", TeX=>"y"]);
$lhs1 = Formula(nicestring([$a,$b],["x","y"]))->reduce;
$rhs1 = Formula("$c");
$lhs2 = Formula(nicestring([$d,$e],["x","y"]))->reduce;
$rhs2 = Formula("$f");




###########################################################################
#Context()->texStrings;

BEGIN_TEXT

Convert the augmented matrix to the equivalent linear system. 
$PAR

\[ \left[ \begin{array} {rr}
$a & $b \cr
$d & $e
\end{array} \right| \left. \begin{array}{r}
$c \cr
$f
\end{array} \right]
\]
$BR

Use the variables `x` and `y`.

END_TEXT

#####
#Convert the augmented matrix to the equivalent linear system.  
#>> [``A=[$A]``] <<  
#Use the variables x and y.
#####

BEGIN_PGML

[__________]*{$lhs1} = [____]*{$rhs1}  
[__________]*{$lhs2} = [____]*{$rhs2}

END_PGML



#BEGIN_PGML_SOLUTION
#END_PGML_SOLUTION

ENDDOCUMENT();
