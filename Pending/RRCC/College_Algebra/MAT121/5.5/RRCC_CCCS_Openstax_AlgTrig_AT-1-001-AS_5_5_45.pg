DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


###########################
#  Setup

Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');
Context()->variables->add(i => "Real");

$a=non_zero_random(1,4,1);
$b = non_zero_random(-4,4,1); 
$c = non_zero_random(-4,4,1);

#f=(x-(a+bi))(x-(a-bi))(x-c) expanded
$f=Formula("x^3+(-2*$a-$c)*x^2+(2*$a*$c+$a^2+($b)^2)*x-$c*(($a)^2+($b)^2)")->reduce;

$g = Formula("$a+$b*i")->reduce;
$h = Formula("$a-$b*i")->reduce;
$ans = List($g,$h,$c);
###########################
#  Main text

BEGIN_PGML
Use the Rational Zero Theorem to find all the zeros of [`f(x)=[$f]`]. Enter all the zeros as a comma separated list.


+ Zeros: [_______________]{$ans} [@ AnswerFormatHelp("numbers") @]*


END_PGML


