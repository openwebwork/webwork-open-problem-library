###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserAssignment.pl",
"parserImplicitEquation.pl",
"contextFraction.pl", 
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

##########################
#  Setup


Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');
Context()->variables->add(y => 'Real');

$a=random(2,10);
$b=random(1,10);
$c=random(1,10);


$f = Formula("$a*x")->reduce;
$g = Formula("$c-$b*y")->reduce;

$ans = Formula("-$a/$b*x+$c/$b");


#################################
#  Main text


BEGIN_PGML
Solve the equation [` [$f]=[$g] `] for [` y `] in terms of [`x`].  

[`y=`]  [_______________]{$ans} [@ AnswerFormatHelp("formulas") @]*  



END_PGML



