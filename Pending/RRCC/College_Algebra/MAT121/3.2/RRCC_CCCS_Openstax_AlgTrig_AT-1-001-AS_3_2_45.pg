Context("Interval");

$a = list_random(1,4,9);
$b = random(1,3,1);
$c = random(1,3,1);
$d = random(1,5,1);
$e = random(1,3,1);
$f = random(1,5,1);


Context()->noreduce("(-x)-y");


$domain = Interval("(-infinity,-$b)U($a,infinity)");
$range = Interval("(-infinity, -$d-$c*$b)U(sqrt($a),infinity)");

Context("PiecewiseFunction");
Context()->noreduce("(-x)-y");

$fun = PiecewiseFunction("$c*x-$d if x < -$b else sqrt(x) if x > $a")->reduce; 

