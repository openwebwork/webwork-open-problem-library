DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context()->noreduce('(-x)-y','(-x)+y');
$a=non_zero_random(1,10);
$b=non_zero_random(1,10);
$c=non_zero_random(1,10);
$d=non_zero_random(1,10);

$f=Formula("($a*x+$b)/($c*x+$d)")->reduce;

Context("Interval");
$bound = Compute("-$d/$c");
$ans=Compute("(-infinity,$bound)U($bound,infinity)");


###########################
#  Main text

BEGIN_PGML

Find the domain of [`` f(x)=[$f] ``]. Enter your solution in interval notation.

[_______________]{$ans} [@ AnswerFormatHelp("intervals") @]*


END_PGML


