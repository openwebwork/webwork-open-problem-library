###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGgraphmacros.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

###########################
#  Setup
Context("Numeric");

$a=non_zero_random(-1,1, 1);
$s = random(0,2);

$gr = init_graph(-10,-10,10,10,
axes=>[0,0],
grid=>[20,20],
size=>[400,400]
);

$f1 = Formula("(x**3+3*x**2-6*x-8)/4") -> reduce;
$f2 = Formula("(x**2-6*x-8)/4") -> reduce;
$f3 = Formula(".5*((.5*x)**5+3.5*(.5*x)**4-2.5*(.5*x)**3-12.5*(.5*x)**2+.5*1.5*x+9)") -> reduce;

@graphs = ( $f1,$f2,$f3);

add_functions($gr, " $graphs[$s] for x in <-10,10> using color:blue and weight:2");
($gr->fn)[0]->steps(3000);

if ($s == 0) {
     $ans = 3;
}
elsif($s == 1){
     $ans = 2;
}

elsif($s == 2){
     $ans = 5;
}


###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Determine the least possible degree of the polynomial function shown.
$BR
$BR
$BCENTER
\{ image( insertGraph($gr), 
width=>300,height=>300,tex_size=>800 ) \}
$BR
(Click on graph to enlarge)
$ECENTER
END_TEXT
Context()->normalStrings;

BEGIN_PGML

The least degree would be: [_____]{$ans}


END_PGML


