###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


##########################
#  Setup

Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');

$a = non_zero_random(-10,10,1);
$b = random(1,9,1);
$c = non_zero_random(1,5,2);
$d = non_zero_random(2,4,2);


$eqn = Formula("($c/$d)*x+($b-($a*$c)/$d)")->reduce;



#################################
#  Main text


BEGIN_PGML

Find the equation of the line that contains the point [`([$a],[$b])`] and has a slope of [` \dfrac{[$c]}{[$d]} `]. 

[`y=`][___________]{$eqn} [@ AnswerFormatHelp("formulas") @]*


END_PGML


