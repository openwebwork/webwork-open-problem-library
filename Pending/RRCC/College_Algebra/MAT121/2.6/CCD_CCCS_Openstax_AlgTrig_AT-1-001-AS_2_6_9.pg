###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup


$a = random(2,3);
if ($a == 2) {
  $b = random(3,6);
} else {
  $b = random(2,4);
}

$c = $a**($b-1);
$d = non_zero_random(-5,5);

if ( $b % 2) {
  $ans = List($a**$b + $d, -$a**$b + $d);
} else {
  $ans = $a**$b + $d;
}

###########################
#  Main text

BEGIN_PGML
Solve [` \left( x - [$d] \right)^{[$b-1]/[$b]} = [$c] `].

If you find more than one solution, give your answer as a comma-separated list.

[`x=`] [_______________]{$ans} [@ AnswerFormatHelp("numbers") @]*



END_PGML


