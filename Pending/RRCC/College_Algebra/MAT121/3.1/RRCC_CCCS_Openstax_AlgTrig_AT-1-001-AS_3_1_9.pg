#  Setup

Context("Numeric");
 Context()->variables->add(y => 'Real');

$a=random(2,6);
$f1 = Compute("x**$a");
$popup1 = PopUp(
  ["?","Yes","No"],
  "Yes",
);


Context()->variables->set(
x=>{limits=>[-1,1]},
y=>{limits=>[0,4]}
);
$b=non_zero_random(2,8);
$c=non_zero_random(1,5);
$f2 = Compute("$b*x**2");
$popup2 = PopUp(
  ["?","Yes","No"],
  "Yes",
);


$d=non_zero_random(2,8);
$e=non_zero_random(-5,5);
$f3 = Compute("$d*x");
$f32 = Compute("y**2");
$popup3 = PopUp(
  ["?","Yes","No"],
  "No",
);


$f4 = Compute("sqrt(1-x^2)");
$popup4 = PopUp(
  ["?","Yes","No"],
  "Yes",
);


$h=non_zero_random(-10,-2);
$f5 = Compute("$h*x*y");
$popup5 = PopUp(
  ["?","Yes","No"],
  "Yes",
);
###########################
#  Main text

BEGIN_PGML

Do the following relations represent [`y`] as a function of [`x`]?

+ [` y=[$f1] `]     [___________]{$popup1} 

