###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
"contextFraction.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup

$a = random(1,2);  # different forms of problem

# Parameters

do{
  $t = list_random(2,4,6);
  $u = list_random(1,3,5);
  $v = list_random(1,3,5);
  $w = random(1,2,3);
}
until (($t != $w) && ($u != $w*$v));  # get rid of boundary cases with weird intervals

# Solutions

$c1 = $v;  # critical values where function changes sign
if ($a ==1) {
  $c2 = ($u - $w*$v) / ($t - $w);
  }
else {
  $c2 = ($u + $w*$v) / ($t + $w);
}

Context("Interval");
if ($c1 < $c2) {
  $x1 = Union("(-inf,$c1)U[$c2,inf)");
  }
else {
  $x1 = Union("(-inf,$c2]U($c1,inf)");
  }
  

###########################
#  Main text
if ($a == 1) 
{
BEGIN_PGML

Solve the rational inequality.  Write your answer in interval notation. 

[`` \dfrac{{[$t]}x - {[$u]}}{x - {[$v]}} \ge {[$w]} ``]

 [_______________]{$x1} [@ AnswerFormatHelp("intervals") @]*

END_PGML
}
else
{
BEGIN_PGML

Solve the rational inequality.  Write your answer in interval notation. 

[`` \dfrac{{[$t]}x - {[$u]}}{x - {[$v]}} \ge -{[$w]} ``]

 [_______________]{$x1} [@ AnswerFormatHelp("intervals") @]*

END_PGML
}

