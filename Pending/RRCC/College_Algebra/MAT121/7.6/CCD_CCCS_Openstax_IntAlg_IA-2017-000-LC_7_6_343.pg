###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup

$a = random(1,2);  # different forms of problem

# Parameters

$u=random(1,9);
do { $v = random(1, 9); } until ($v != $u);

# Solutions
Context("Interval");

if ($u < $v) {
  $min = $u;
  $max = $v;
}
else {
  $min = $v;
  $max = $u;
}

if ($a == 1) {
  $x1 = Union("(-inf,$min) U ($max,inf)");
  }
else {
  $x1 = Union("(-inf,-$max) U (-$min,inf)");
  }

###########################
#  Main text
if ($a == 1) 
{
BEGIN_PGML

Solve the rational inequality.  Write your answer in interval notation. 

[`` \dfrac{x - {[$u]}}{x - {[$v]}} > 0 ``]

 [_______________]{$x1} [@ AnswerFormatHelp("intervals") @]*

END_PGML
}
else
{
BEGIN_PGML

Solve the rational inequality.  Write your answer in interval notation. 

[`` \dfrac{x + {[$u]}}{x + {[$v]}} > 0 ``]

 [_______________]{$x1} [@ AnswerFormatHelp("numbers") @]*

END_PGML
}

