"PGcourse.pl",
"contextFraction.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup

$a = random(1,2);  # different forms of problem

# Parameters

$u = random(3,6);
$v = random(5,9);
$w = random(1,$u - 1);

# Solutions

$c1 = $v;  # critical values where function changes sign
if ($a ==1) {
  $c2 = ($w*$v)/($w - $u);
  }
else {
  $c2 = (-$w*$v)/(-$w - $u);;
}

  if ($c1 < $c2) {
    $min = $c1;
    $max = $c2;
    }
  else {
    $min = $c2;
    $max = $c1;
    }

Context("Interval");
$x1 = Union("(-inf,$min)U($max,inf)");
  

###########################
#  Main text
if ($a == 1) 
{
BEGIN_PGML

Solve the rational inequality.  Write your answer in interval notation. 

[`` \dfrac{{[$u]}x}{x - {[$v]}} > {[$w]} ``]

 [_______________]{$x1} [@ AnswerFormatHelp("intervals") @]*

END_PGML
}
else
{
BEGIN_PGML

Solve the rational inequality.  Write your answer in interval notation. 

[`` \dfrac{{[$u]}x}{x - {[$v]}} > -{[$w]} ``]

 [_______________]{$x1} [@ AnswerFormatHelp("intervals") @]*

END_PGML
}

