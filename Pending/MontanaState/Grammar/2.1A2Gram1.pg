DOCUMENT();

    loadMacros(
      "PGstandard.pl",
      "PGML.pl",
      "MathObjects.pl",
      "parserPopUp.pl",
      "PGcourse.pl",
      "parserRadioButtons.pl"
    );

$a = random(1,7,1);
$b = random(2,9,1);
$c = random(5,15,1);



############################
# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 1;

$radio1 = new_multiple_choice();
$radio1->qa("Is the following a true generalization or an open sentence?","Open sentence");
$radio1->extra("True Generalization");
$radio1->makeLast("Open sentence");

$radio2 = new_multiple_choice();
$radio2->qa("Is the following a true generalization or an open sentence?","True Generalization");
$radio2->makeLast("Open sentence");

############################
# Main Text

Context()->texStrings;
BEGIN_TEXT

\{$radio1->print_q()\} $BR 
\( $a x + $b = $c \)
\{$radio1->print_a()\} 

$BR $BR
\{$radio2->print_q()\} $BR 
\( x^{2} \geq 0 \)
\{$radio2->print_a()\} 

$BR $BR
\{$radio2->print_q()\} $BR 
\( x^{2}-1 = (x-1)(x+1) \)
\{$radio2->print_a()\} 

$BR $BR
\{$radio1->print_q()\} $BR 
\( x^{2} > $a \)
\{$radio1->print_a()\} 


END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

ANS(radio_cmp($radio1->correct_ans()));
ANS(radio_cmp($radio2->correct_ans()));
ANS(radio_cmp($radio2->correct_ans()));
ANS(radio_cmp($radio1->correct_ans()));

