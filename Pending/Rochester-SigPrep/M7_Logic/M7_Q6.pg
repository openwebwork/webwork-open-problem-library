############################
# Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

############################
# Setup

$showPartialCorrectAnswers = 1;

$a = random(5,8,1);
$b = random(10,15,1);

$radio1 = new_multiple_choice();
$radio1->qa("Does this sentence follow logically?","Does not follow logically");
$radio1->extra("Follows logically");
$radio1->makeLast("Does not follow logically");

$radio2 = new_multiple_choice();
$radio2->qa("Does this sentence follow logically?","Follows logically");
$radio2->extra("Does not follow logically");
$radio2->makeLast("Does not follow logically");


############################
# Main Text

Context()->texStrings;
BEGIN_TEXT

Suppose the following sentence is true: $BR
$BCENTER
If \( x < $a\), then \(y \geq $b \).
$BR $BR
$ECENTER

\{$radio1->print_q()\} $BR 
If \(x < $a \), then \(y > $b\).
\{$radio1->print_a()\} 

$BR $BR
\{$radio1->print_q()\} $BR 
If \(x \leq $a \), then \(y \geq $b\).
\{$radio1->print_a()\} 

$BR $BR
\{$radio2->print_q()\} $BR 
If \(y < $b \), then \(x \geq $a\).
\{$radio2->print_a()\} 

$BR $BR
\{$radio1->print_q()\} $BR 
If \(y \leq $b \), then \(x \geq $a\).
\{$radio1->print_a()\} 


END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

ANS(radio_cmp($radio1->correct_ans()));
ANS(radio_cmp($radio1->correct_ans()));
ANS(radio_cmp($radio2->correct_ans()));
ANS(radio_cmp($radio1->correct_ans()));



