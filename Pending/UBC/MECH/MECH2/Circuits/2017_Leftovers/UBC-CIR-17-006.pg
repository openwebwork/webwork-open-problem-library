Context("Numeric");
#given
$r1 = random(1,3,.1);
$r2 = random(.5,1.5,.1);


#image scale
$imgScale =0.4;

#image aspect ratio
$width = $imgScale*917;
$height = $imgScale*721;

#computation 
$rA = 1/(1/7+1/9)+1.5;
$rT = $r1 + $r2 + $rA;
$i = 8/($rT);

#set tolerance
Context()->flags->set(
tolerance=>.01);

