Context("Numeric");

#given
$r = random(10,25,2.5);
$a = random(0.1,1,0.1);

#computation 
$ionumer = (50*(2*$r - 25));
$iodenom = (50*$a - 95*$r - 4*$a*$r + 4*$r**2);
$vonumer = (50*(25*$a - 25*$r - 2*$a*$r + 2*$r**2));
$vodenom =(50*$a - 95*$r - 4*$a*$r + 4*$r**2);
$vo = $vonumer/$vodenom;
$io = $ionumer/$iodenom;

#set tolerance
Context()->flags->set(
tolerance=>.02,
);

