$height = $imgScale*2072;

#computation 
$f1 = $p1;
$f2 = $p1 + $p2;
$f3 = $p1 + $p2 + $p3;
$sigma = $yield/$sf;
$a1 = $f1/$sigma*1000;
$a2 = $f2/$sigma*1000;
$a3 = $f3/$sigma*1000;


