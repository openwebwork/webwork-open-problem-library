Context("Numeric");
Context()->variables->add(M=>"Real");
Context()->variables->add(L=>"Real");
Context()->variables->add(A=>"Real");
Context()->variables->add(B=>"Real");
Context()->variables->add(C=>"Real");

#given


#computation 

$ac = Formula("M / L x");
$cb = Formula("M/ L x - M");

#set tolerance
Context()->flags->set(
tolerance=>.05);

