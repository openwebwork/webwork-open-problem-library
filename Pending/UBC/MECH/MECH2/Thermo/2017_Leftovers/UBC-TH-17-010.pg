Context("Numeric");
#given
$t1 = random(1,10,.1);
$t2 = random(20,27,.1);

#image scale
$imgScale =0.2;

#image aspect ratio
$width = $imgScale*1320;
$height = $imgScale*1675;

#computation 
$t1K = $t1+273.15;
$t2K = $t2+273.15;
$cop = $t1K/($t2K - $t1K);

#set tolerance
Context()->flags->set(
tolerance=>.01);

