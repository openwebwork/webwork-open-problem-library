Context("Numeric");
#given
$w = random(100,200,1);
$q = random(1500,2500,10);

#computation 
$copR = $q * 1000 / ($w * 60 *60);
$tH = 233*(1 + 1/$copR);
$qH = $w + $q*1000/3600;
$copH = $qH/$w;

#set tolerance
Context()->flags->set(
tolerance=>.01);

