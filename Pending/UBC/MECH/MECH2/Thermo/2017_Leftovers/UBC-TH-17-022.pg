Context("Numeric");
#given
$x = random(.02,.08,.001);


#computation 
$R = 8.314/28;
$m = 100000*$x/($R*300*1000);
$deltaS = $m*$R*ln(1/4);
$q = 300*$deltaS;

#set tolerance
Context()->flags->set(
tolerance=>.01);

