"Force in y$BR",                
"Force in z$BR",
"Moment about x$BR",
"Moment about y$BR",
"Moment about z"
);

BEGIN_TEXT
\{ $mc -> print_q() \}
$PAR 
\{ image( "220Constraints-6-7-8.png", width=>300, height=>242 ) \}
$PAR
\{ $mc -> print_a() \}

END_TEXT

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );

