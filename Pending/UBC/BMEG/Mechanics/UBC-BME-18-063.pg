Context("Numeric");

#given
$theta = random(40,50,1);
$beta = random(60,70,1);
$Fm = random(1200,1500,1);

#computation 
$Fmx = $Fm*cos($theta*pi/180);
$Fmy = $Fm*sin($theta*pi/180);
$Fj = $Fmx/cos($beta*pi/180);
$w = $Fj*sin($beta*pi/180)-$Fmy;

#set tolerance
Context()->flags->set(
tolerance=>.01);

