Context("Numeric");

#given
$lo = 10; #cm
$k = 10; #N/m
$n = 4;
$eo = 8.854*(10**(-12)); #f/m

#computation 
$q = sqrt(4 * pi * $eo * (sqrt($n)-1)*$n * ($lo/100)**3 * $k);
$rhoL = - $q/(2 * $lo/100)*(10**6);

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

