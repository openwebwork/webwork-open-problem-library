#Problem APEX 5.4.25-27

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
);

## DBsubject(Calculus - single variable)
## DBchapter(Integrals)
## DBsection(Definite integrals (without trigonometric functions))
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('5.4')
## Problem1('18-24')

TEXT(beginproblem());

###################################
# Setup

## a)
$a1 = random(1,15,1)*random(-1,1,2);
$b1 = $a1 + random(5,25,1);

$c = random(1,9,1)*random(-1,1,2);

$f = "$c";

$fI = Formula("$c x");
$ans1 = $fI->eval(x=>$b1) - $fI->eval(x=>$a1);

## b)
$a2 = random(1,15,1)*random(-1,1,2);
$b2 = $a2 + random(5,25,1);

$g = "\,";

$gI = Formula("x");
$ans2 = $gI->eval(x=>$b2) - $gI->eval(x=>$a2);

## c)
$a3 = random(1,15,1)*random(-1,1,2);
$b3 = $a3 + random(5,25,1);

$h = "0";

$ans3 = 0;


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
$PAR
Evaluate the definite integrals
$PAR
a) \(\displaystyle\int_{$a1}^{$b1} $f \, dx = \) 
\{ans_rule(15)\} 
$BR$HR
$PAR
b) \(\displaystyle\int_{$a2}^{$b2} $g \, dx = \) 
\{ans_rule(15)\} 
$BR$HR
$PAR
c) \(\displaystyle\int_{$a3}^{$b3} $h \, dx = \) 
\{ans_rule(15)\}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));

###################################

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
Use the Fundamental Theorem of Calculus.
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a1}^{$b1} $f \, dx &=&
    \left($c x  \right) \Big|_{$a1}^{$b1}\\
    &=& $c($b1) - $c($a1)\\
    &=& $ans1
  \end{array}
\]
$BR$HR
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a2}^{$b2} $g \, dx
    =    \displaystyle \int_{$a2}^{$b2} 1 \, dx
    &=& \left( x \right) \Big|_{$a2}^{$b2}\\
    &=& ($b2) - ($a2)\\
    &=& $ans2
  \end{array}
\]
$BR$HR
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a3}^{$b3} $h \, dx &=&
    \left(0 \right) \Big|_{$a3}^{$b3}\\
    &=& $ans3
  \end{array}
\]
END_SOLUTION
ENDDOCUMENT();    
