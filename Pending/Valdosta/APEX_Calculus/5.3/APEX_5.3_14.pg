#Problem APEX 5.3.14

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
);

## DBsubject(Algebra)
## DBchapter(Finite sequences and series)
## DBsection(Notation)
## Institution(Valdosta State University)
## Author(S. V. Ault)
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('5.3')
## Problem1('14')

TEXT(beginproblem());


###################################
# Setup

$x = 1;
$n = random(4,9,1);
$a1 = "\dfrac{1}{2}";

@sum = ($a1);
for ($i = 2; $i <= $n; $i++) {
  $num = $i;
  $den = $i + 1;
  $next = "\dfrac{$num}{$den}";
  push(@sum, $next);
}

$str_sum = join( '+', @sum);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
$PAR
Write the sum in summation notation, using the given
lower bound.
$PAR
\[
  $str_sum = \sum_{i=$x}^{b} a_i
\]
\(b =\)\{ans_rule(5)\}, \(a_i = \)\{ans_rule(10)\}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

$upper = $n+$x-1;
$term = "i/(i+1)";

ANS(num_cmp($upper));
ANS(fun_cmp($term, vars=>['i']));

###################################

$x1 = $x+1;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
\[
  $str_sum
\]
\[
  = \dfrac{1}{1+1} + \dfrac{2}{2 + 1} + \cdots + 
  \dfrac{$upper}{$upper + 1}
  = \sum_{i=$x}^{$upper} \dfrac{i}{i+1}
\]
END_SOLUTION
ENDDOCUMENT();    
