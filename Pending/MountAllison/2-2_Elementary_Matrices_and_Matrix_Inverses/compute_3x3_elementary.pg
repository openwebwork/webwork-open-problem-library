## DESCRIPTION
## Construct a 3x3 elementary matrix based on a given row operation.
##   The row operation is chosen from the 3 possible types randomly with equal probability.
## ENDDESCRIPTION

## DBsubject(Linear algebra)
## DBchapter(Matrices)
## DBsection(Elementary matrices)
## Date(February 11, 2020)
## Institution(Mount Allison University)
## Author(Nathaniel Johnston)
## MO(1)
## TitleText1('Introduction to Linear and Matrix Algebra')
## AuthorText1('Nathaniel Johnston')
## EditionText1('1')
## Section1('2.2')
## Problem1('')
## KEYWORDS('elementary matrix')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "PGchoicemacros.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Matrix");

$flg = random(1,3);

for ( $i = 0; $i<=2; $i++ ) {
    for ( $j = 0; $j<=2; $j++ ) {
        if($i == $j) {
            $a[$i][$j] = 1;
        } else {
            $a[$i][$j] = 0;
        }
    }
}

if($flg == 1) {# multiplication elementary matrix
    $loc = random(1,3);
    $val = list_random(-5,-4,-2,2,4,5);
    $a[$loc-1][$loc-1] = $val;
    $rowop = "\( $val R_$loc \)";
} elsif($flg == 2) {# swap elementary matrix
    $loca = random(1,3);
    do {
        $locb = random(1,3);
    } until ($locb != $loca);
    
    $a[$loca-1][$loca-1] = 0;
    $a[$loca-1][$locb-1] = 1;
    $a[$locb-1][$loca-1] = 1;
    $a[$locb-1][$locb-1] = 0;
    $rowop = "\( R_$loca \leftrightarrow R_$locb \)";
} else {# addition elementary matrix
    $loca = random(1,3);
    do {
        $locb = random(1,3);
    } until ($locb != $loca);
    
    $val = list_random(-5,-4,-3,-2,2,3,4,5);
    $a[$loca-1][$locb-1] = $val;
    $rowop = "\( R_$loca + $val R_$locb \)";
}

$M = Matrix(@a);

##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Write down the \( 3 \times 3 \) elementary matrix \( E \) corresponding to the row operation $rowop.
$BR
$BR
\( E \) = \{ $M->ans_array \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

$showPartialCorrectAnswers = 1;

ANS( $M->cmp() );

ENDDOCUMENT();
