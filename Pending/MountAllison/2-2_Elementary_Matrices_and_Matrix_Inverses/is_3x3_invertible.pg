## DESCRIPTION
## Determine whether or not a 3x3 matrix is invertible.
##   The matrix and its RREF both have small integer entries.
##   Generates an invertible or non-invertible (rank 2) matrix with equal probability.
## ENDDESCRIPTION

## DBsubject(Linear algebra)
## DBchapter(Matrices)
## DBsection(Inverses)
## Date(February 11, 2020)
## Institution(Mount Allison University)
## Author(Nathaniel Johnston)
## MO(1)
## TitleText1('Introduction to Linear and Matrix Algebra')
## AuthorText1('Nathaniel Johnston')
## EditionText1('1')
## Section1('2.2')
## Problem1('')
## KEYWORDS('matrix','inverse','matrix inverse')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "contextFraction.pl",
    "parserPopUp.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Matrix");

$flg = random(1,2);

if($flg == 1){
    do {
        $c1 = random(-2,3);
        $c2 = random(-2,3);
        $c3 = random(-2,3);
        $c4 = random(-2,3);
        $c5 = random(-2,3);
        $c6 = random(-2,3);
        $c7 = random(-2,3);
        $c8 = random(-2,3);
        $c9 = random(-2,3);
        $A = Matrix([[$c1,$c2,$c3],[$c4,$c5,$c6],[$c7,$c8,$c9]]);
        
        $ans = "Yes";
    } until (abs($A->det) > 0.1);
}else{
    do {
        $c1 = random(-2,3);
        $c2 = random(-2,3);
        $c3 = random(-2,3);
        $c4 = random(-2,3);
        $c5 = random(-2,3);
        $c6 = random(-2,3);
        $c7 = random(-2,3);
        $c8 = random(-2,3);
        $c9 = random(-2,3);
        $C = Matrix([[$c1,$c2,$c3],[$c4,$c5,$c6],[$c7,$c8,$c9]]);
        
        $r1 = random(-2,4);
        $r2 = random(-2,4);
        $R = Matrix([[1,0,$r1],[0,1,$r2],[0,0,0]]);
        
        $A = $C * $R;
        $ans = "No";
    } until (abs($C->det) > 0.1);
}
$pop = PopUp(["Choose","Yes","No"], $ans);

##############################################################
#  Text
##############################################################


Context()->texStrings;
BEGIN_TEXT
Is the matrix \( \displaystyle $A \) invertible?
$BR
$BR
\{ $pop->menu \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

ANS( $pop->cmp );

ENDDOCUMENT();
