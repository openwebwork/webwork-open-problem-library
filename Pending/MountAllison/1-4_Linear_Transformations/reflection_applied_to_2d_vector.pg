## DESCRIPTION
## Apply a reflection to a vector in R^2.
##   The line being reflected through will never be the x-axis or y-axis; it will be more complicated.
## ENDDESCRIPTION

## DBsubject(Linear algebra)
## DBchapter(Linear transformations)
## DBsection(Evaluating linear transformations)
## Date(January 31, 2020)
## Institution(Mount Allison University)
## Author(Nathaniel Johnston)
## MO(1)
## TitleText1('Introduction to Linear and Matrix Algebra')
## AuthorText1('Nathaniel Johnston')
## EditionText1('1')
## Section1('1.4')
## Problem1('')
## KEYWORDS('linear transformations','reflection matrices')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "PGchoicemacros.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Vector");
Context()->lists->set(Vector => {open => "(", close => ")"});
Context()->parens->set("(" => {type => "Vector", close => ")"});

do {
    $a = random(-3,5);
    $b = random(-3,5);
    $v = Vector([$a,$b]);
    
    $c = random(-3,5);
    $d = random(-3,5);
    $w = Vector([$c,$d]);
    
    $e = random(-3,5);
    $f = random(-3,5);
    $u = Matrix([$e],[$f]);
} until (($a != 0 || $b != 0) && ($c != 0 || $d != 0) && ($e != 0 && $f != 0) && ($a != $c || $b != $d));

$P = $u * ($u->transpose);
$P = $P/($P->trace);
$F = 2*$P - Value::Matrix->I(2);

$udisp = Vector($u->transpose);

$ans1 = Vector(($F * $v)->transpose);
$ans2 = Vector(($F * $w)->transpose);

##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Suppose \( \displaystyle F_{\mathbf{u}} : \mathbb{R}^2 \rightarrow \mathbb{R}^2 \) is the linear transformation that reflects through the line in the direction of the vector \( $udisp \). Compute the indicated vectors:
$BR
$BR
\( \displaystyle F_{\mathbf{u}} $v \) = \{ $ans1->ans_array \}
$BR
\( \displaystyle F_{\mathbf{u}} $w \) = \{ $ans2->ans_array \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

$showPartialCorrectAnswers = 1;

ANS( $ans1->cmp() );
ANS( $ans2->cmp() );

ENDDOCUMENT();
