## DESCRIPTION
## Determine whether or not several subsets of R^2 are bases of it.
## ENDDESCRIPTION

## DBsubject(Linear algebra)
## DBchapter(Euclidean spaces)
## DBsection(Basis and dimension)
## Date(October 7, 2019)
## Institution(Mount Allison University)
## Author(Nathaniel Johnston)
## MO(1)
## TitleText1('Introduction to Linear and Matrix Algebra')
## AuthorText1('Nathaniel Johnston')
## EditionText1('1')
## Section1('2.4')
## Problem1('')
## KEYWORDS('basis')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "parserPopUp.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Matrix");

$a1 = random(-5,5);
$b1 = random(-5,5);
$ans1 = "Is not a basis";

$a2 = random(-5,5);
$b2 = random(-5,5);
$c2 = random(-5,5);
$d2 = random(-5,5);
if(abs($a2*$d2 - $b2*$c2) > 0.1) {
    $ans2 = "Is a basis";
} else {
    $ans2 = "Is not a basis";
}

$a3 = random(-5,5);
$b3 = random(-5,5);
$c3 = random(-5,5);
$d3 = random(-5,5);
$e3 = random(-5,5);
$f3 = random(-5,5);
$ans3 = "Is not a basis";

$a4 = random(1,5);
$ans4 = "Is not a basis";

$pop1 = PopUp(["Choose","Is a basis","Is not a basis"], $ans1);
$pop2 = PopUp(["Choose","Is a basis","Is not a basis"], $ans2);
$pop3 = PopUp(["Choose","Is a basis","Is not a basis"], $ans3);
$pop4 = PopUp(["Choose","Is a basis","Is not a basis"], $ans4);
   
##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Determine which of the following sets of vectors are and are not bases of \( \mathbb{R}^2 \).
$BR
$BR
\{ $pop1->menu \} The set \( \lbrace($a1,$b1)\rbrace \).
$BR
\{ $pop2->menu \} The set \( \lbrace($a2,$b2),($c2,$d2)\rbrace \).
$BR
\{ $pop3->menu \} The set \( \lbrace($a3,$b3),($c3,$d3),($e3,$f3)\rbrace \).
$BR
\{ $pop4->menu \} The set of vectors of the form \( (x,x+$a4) \), where \( x \in \mathbb{R} \).
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

$showPartialCorrectAnswers = 0;

ANS( $pop1->cmp );
ANS( $pop2->cmp );
ANS( $pop3->cmp );
ANS( $pop4->cmp );

ENDDOCUMENT();