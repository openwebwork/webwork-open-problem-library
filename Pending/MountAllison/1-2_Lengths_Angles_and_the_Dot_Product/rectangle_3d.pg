## DESCRIPTION
## Find the coordinate of the 4th coordinate of a rectangle in R^3, given the other 3.
## ENDDESCRIPTION

## DBsubject(Geometry)
## DBchapter(Vector geometry)
## DBsection(Dot product, length, and unit vectors)
## Date(October 11, 2019)
## Institution(Mount Allison University)
## Author(Nathaniel Johnston)
## MO(1)
## TitleText1('Introduction to Linear and Matrix Algebra')
## AuthorText1('Nathaniel Johnston')
## EditionText1('1')
## Section1('1.2')
## Problem1('')
## KEYWORDS('vectors','orthogonality','dot product')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "PGchoicemacros.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Vector");
Context()->lists->set(Vector => {open => "(", close => ")"});
Context()->parens->set("(" => {type => "Vector", close => ")"});

do {
    $a = random(-3,3);
    $b = random(-3,3);
    $c = random(-3,3);
    $s1 = Vector([$a,$b,$c]);
} until ($a != 0 || $b != 0 || $c != 0);

if($c == 0) {
    $s2 = Vector([-$b,$a,0]);
} else {
    $s2 = Vector([$c,0,-$a]);
}

do {
    $a = random(-2,3);
    $b = random(-2,3);
    $c = random(-2,3);
    $p1 = Vector([$a,$b,$c]);
} until ($a != 0 || $b != 0 || $c != 0);

$p2 = $p1 + $s1;
$p3 = $p1 + $s2;

$ans = $p1 + $s1 + $s2;

# Shuffle the order in which the coordinates are displayed to the user
$shuf = random(1,3);
if($shuf == 1) {
    $d1 = $p1;
    $d2 = $p2;
    $d3 = $p3;
} elsif($shuf == 2) {
    $d3 = $p1;
    $d2 = $p2;
    $d1 = $p3;
} else {
    $d2 = $p1;
    $d1 = $p2;
    $d3 = $p3;
}

##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
A rectangle in \( \displaystyle \mathbb{R}^3 \) has three of its corners at the points \( \displaystyle $d1 \), \( \displaystyle $d2 \), and \( \displaystyle $d3\). What are the coordinates of its fourth corner?
$BR
$BR
Fourth corner: \{ $ans->ans_array \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

ANS( $ans->cmp() );

ENDDOCUMENT();
