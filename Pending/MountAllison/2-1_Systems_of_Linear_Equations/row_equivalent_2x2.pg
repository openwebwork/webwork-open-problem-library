## DESCRIPTION
## Determine whether or not two 2x2 matrices are row equivalent.
##   Both matrices, and their RREFs, have small integer entries.
##   There is a 50/50 chance that the matrices are row equivalent.
## ENDDESCRIPTION

## DBsubject(Linear algebra)
## DBchapter(Matrices)
## DBsection(Echelon form)
## Date(March 26, 2020)
## Institution(Mount Allison University)
## Author(Nathaniel Johnston)
## MO(1)
## TitleText1('Introduction to Linear and Matrix Algebra')
## AuthorText1('Nathaniel Johnston')
## EditionText1('1')
## Section1('2.1')
## Problem1('')
## KEYWORDS('linear algebra','matrix','row equivalence','row echelon form')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "parserPopUp.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Matrix");

$flg = random(1,2);

if($flg == 1){
    do {
        $C = Matrix([[random(-3,5),random(-3,5)],[random(-3,5),random(-3,5)]]);
        
        $R = Matrix([[1,0],[0,1]]);
        
        $A = $C * $R;
    } until (abs($C->det) > 0.1);
}else{
    do {
        $C = Matrix([[random(-3,5),random(-3,5)],[random(-3,5),random(-3,5)]]);
        
        $r1 = random(-3,5);
        $R = Matrix([[1,$r1],[0,0]]);
        
        $A = $C * $R;
    } until (abs($C->det) > 0.1);
}

$flh = random(1,2);
if($flh == 1) {
    do {
        $D = Matrix([[random(-3,5),random(-3,5)],[random(-3,5),random(-3,5)]]);
        $B = $D * $R;
    } until ($B != $A);
    
    $ans = "Row equivalent";
} else {
    $D = Matrix([[random(-3,5),random(-3,5)],[random(-3,5),random(-3,5)]]);
    do {
        $flf = random(1,2);
        if($flf == 1){
            $RB = Matrix([[1,0],[0,1]]);
        }else{
            $r1 = random(-3,5);
            $RB = Matrix([[1,$r1],[0,0]]);
        }
    } until ($RB != $R);
    $B = $D * $RB;

    $ans = "Not row equivalent";
}

$pop = PopUp(["Choose","Row equivalent","Not row equivalent"], $ans);

##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Determine whether or not the matrices \( \displaystyle $A \) and \( \displaystyle $B \) are row equivalent.
$BR
$BR
\{ $pop->menu \} 
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

ANS( $pop->cmp );

ENDDOCUMENT();
