## DESCRIPTION
## Determine whether the span of 2 vectors in R^2 is a line or all of R^2.
##   The vectors have small integer entries.
##   The two possible answers (line or R^2) are randomly chosen with equal probability.
## ENDDESCRIPTION

## DBsubject('Linear algebra')
## DBchapter('Euclidean spaces')
## DBsection('Span')
## Date('February 27, 2020')
## Author('Nathaniel Johnston')
## Institution('Mount Allison University')
## TitleText1('Introduction to Linear and Matrix Algebra')
## EditionText1('1')
## AuthorText1('Nathaniel Johnston')
## Section1('2.3: Subspaces, Spans, and Linear Independence')
## Problem1('')
## KEYWORDS('Euclidean space','span')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "contextFraction.pl",
    "PGchoicemacros.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Matrix");

$mc = new_multiple_choice();

$flg = random(1,2);

if($flg == 1){
    do {
        $c1 = random(-2,3);
        $c2 = random(-2,3);
        $c3 = random(-2,3);
        $c4 = random(-2,3);
        $C = Matrix([[$c1,$c2],[$c3,$c4]]);
        
        $r1 = random(-2,4);
        $R = Matrix([[1,$r1],[0,0]]);
        
        $A = $C * $R;
    } until (abs($C->det) > 0.1);
    
    $mc->qa("What is its span?","a line");
    $mc->extra("all of \( \mathbb{R}^2 \)");
}else{
    do {
        $c1 = random(-3,5);
        $c2 = random(-3,5);
        $c3 = random(-3,5);
        $c4 = random(-3,5);
        $C = Matrix([[$c1,$c2],[$c3,$c4]]);
        
        $R = Matrix([[1,0],[0,1]]);
        
        $A = $C * $R;
    } until (abs($C->det) > 0.1);
    
    $mc->qa("What is its span?","all of \( \mathbb{R}^2 \)");
    $mc->extra("a line");
}


Context("Vector");
Context()->lists->set(Vector => {open => "(", close => ")"});
Context()->parens->set("(" => {type => "Vector", close => ")"});
$v1 = Vector($A->row(1));
$v2 = Vector($A->row(2));
   
##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Determine whether the span of the following set of vectors is a line or all of \( \mathbb{R}^2 \): \( \lbrace $v1 ,  $v2 \rbrace \).
$BR
\{ $mc->print_a() \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $mc->correct_ans() ) );

ENDDOCUMENT();
