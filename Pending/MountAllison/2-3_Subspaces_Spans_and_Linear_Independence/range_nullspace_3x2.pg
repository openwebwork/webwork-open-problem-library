## DESCRIPTION
## Determine whether the range and null space of a 3x2 matrix are {0}, a line, a plane, or all of R^2 or R^3.
##   The matrix will have small integer entries, as will its RREF.
##   The matrix will have rank 1 or rank 2 with equal probability.
## ENDDESCRIPTION

## DBsubject('Linear algebra')
## DBchapter('Euclidean spaces')
## DBsection('Row, column, and null spaces')
## Date('February 27, 2020')
## Author('Nathaniel Johnston')
## Institution('Mount Allison University')
## TitleText1('Introduction to Linear and Matrix Algebra')
## EditionText1('1')
## AuthorText1('Nathaniel Johnston')
## Section1('2.3: Subspaces, Spans, and Linear Independence')
## Problem1('')
## KEYWORDS('range','null space','subspace')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "contextFraction.pl",
    "PGchoicemacros.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Matrix");

$mc1 = new_multiple_choice();
$mc2 = new_multiple_choice();

$flg = random(1,4);

if($flg == 1 || $flg == 4){
    do {
        $c1 = random(-2,3);
        $c2 = random(-2,3);
        $c3 = random(-2,3);
        $c4 = random(-2,3);
        $c5 = random(-2,3);
        $c6 = random(-2,3);
        $c7 = random(-2,3);
        $c8 = random(-2,3);
        $c9 = random(-2,3);
        $C = Matrix([[$c1,$c2,$c3],[$c4,$c5,$c6],[$c7,$c8,$c9]]);
        
        $R = Matrix([[1,0],[0,1],[0,0]]);
        
        $A = $C * $R;
    } until (abs($C->det) > 0.1);
    
    $mc1->qa("Range:","a plane");
    $mc1->extra("\( \lbrace \mathbf{0} \rbrace \)", "a line", "all of \( \mathbb{R}^3 \)");
    
    $mc2->qa("Null space:","\( \lbrace \mathbf{0} \rbrace \)");
    $mc2->extra("a line", "all of \( \mathbb{R}^2 \)");
}elsif($flg == 2){
    do {
        $c1 = random(-2,3);
        $c2 = random(-2,3);
        $c3 = random(-2,3);
        $c4 = random(-2,3);
        $c5 = random(-2,3);
        $c6 = random(-2,3);
        $c7 = random(-2,3);
        $c8 = random(-2,3);
        $c9 = random(-2,3);
        $C = Matrix([[$c1,$c2,$c3],[$c4,$c5,$c6],[$c7,$c8,$c9]]);
        
        $r1 = random(-2,4);
        $R = Matrix([[1,$r1],[0,0],[0,0]]);
        
        $A = $C * $R;
    } until (abs($C->det) > 0.1);
    
    $mc1->qa("Range:","a line");
    $mc1->extra("\( \lbrace \mathbf{0} \rbrace \)", "a plane", "all of \( \mathbb{R}^3 \)");
    
    $mc2->qa("Null space:","a line");
    $mc2->extra("\( \lbrace \mathbf{0} \rbrace \)", "all of \( \mathbb{R}^2 \)");
}else{
    do {
        $c1 = random(-2,3);
        $c2 = random(-2,3);
        $c3 = random(-2,3);
        $c4 = random(-2,3);
        $c5 = random(-2,3);
        $c6 = random(-2,3);
        $c7 = random(-2,3);
        $c8 = random(-2,3);
        $c9 = random(-2,3);
        $C = Matrix([[$c1,$c2,$c3],[$c4,$c5,$c6],[$c7,$c8,$c9]]);
        
        $R = Matrix([[0,1],[0,0],[0,0]]);
        
        $A = $C * $R;
    } until (abs($C->det) > 0.1);
    
    $mc1->qa("Range:","a line");
    $mc1->extra("\( \lbrace \mathbf{0} \rbrace \)", "a plane", "all of \( \mathbb{R}^3 \)");
    
    $mc2->qa("Null space:","a line");
    $mc2->extra("\( \lbrace \mathbf{0} \rbrace \)", "all of \( \mathbb{R}^2 \)");
}

   
##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Determine whether the range of the matrix \( $A \) is \( \lbrace \mathbf{0} \rbrace \), a line, a plane, or all of \( \mathbb{R}^3 \), and determine whether its null space is \( \lbrace \mathbf{0} \rbrace \), a line, or all of \( \mathbb{R}^2 \).
$BR
\{ $mc1->print_q() \}
\{ $mc1->print_a() \}
$BR
\{ $mc2->print_q() \}
\{ $mc2->print_a() \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $mc1->correct_ans() ) );
ANS( radio_cmp( $mc2->correct_ans() ) );

ENDDOCUMENT();
