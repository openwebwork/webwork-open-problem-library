## DESCRIPTION
## Compute the area of a triangle in R^2 that is specified by its 2 side vectors.
##   Can be computed via the cross product by embedding the vectors in R^3.
##   Side vectors will have small integer entries and will not be parallel.
## ENDDESCRIPTION

## DBsubject('Geometry')
## DBchapter('Vector geometry')
## DBsection('Cross product')
## Date('March 26, 2020')
## Author('Nathaniel Johnston')
## Institution('Mount Allison University')
## TitleText1('Introduction to Linear and Matrix Algebra')
## EditionText1('1')
## AuthorText1('Nathaniel Johnston')
## Section1('1.A: Areas, Volumes, and the Cross Product')
## Problem1('')
## KEYWORDS('linear algebra','vectors','cross product','triangles')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Vector");
Context()->lists->set(Vector => {open => "(", close => ")"});
Context()->parens->set("(" => {type => "Vector", close => ")"});

do {
    $c1 = list_random(-3,-2,-1,1,2,3,4,5);
    $c2 = random(-3,5);
    $c3 = random(-3,5);
    $c4 = list_random(-3,-2,-1,1,2,3,4,5);
    
    $cv = Vector($c1,$c2,0);
    $cw = Vector($c3,$c4,0);
    $v = Vector($c1,$c2);
    $w = Vector($c3,$c4);
} until ($v->isParallel($w) == 0);

$ans = (($cv x $cw)->norm)/2;

##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Compute the area of the triangle in \( \mathbb{R}^2 \) with side vectors \( $v \) and \( $w \).
$BR
$BR
Area: \{ ans_rule(3) \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

ANS(std_num_cmp($ans));

ENDDOCUMENT();
