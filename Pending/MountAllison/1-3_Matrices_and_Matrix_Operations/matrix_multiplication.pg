## DESCRIPTION
## Compute some basic matrix operations involving multiplication of two 2x2 matrices.
##   Both matrices will have small integer entries (between -3 and 5).
##   Neither of the matrices will be the zero matrix.
## ENDDESCRIPTION

## DBsubject(Linear algebra)
## DBchapter(Matrices)
## DBsection(Matrix algebra)
## Date(October 8, 2019)
## Institution(Mount Allison University)
## Author(Nathaniel Johnston)
## MO(1)
## TitleText1('Introduction to Linear and Matrix Algebra')
## AuthorText1('Nathaniel Johnston')
## EditionText1('1')
## Section1('1.3')
## Problem1('')
## KEYWORDS('matrices','matrix multiplication')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "PGchoicemacros.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Vector");

do {
    $a = random(-3,5);
    $b = random(-3,5);
    $c = random(-3,5);
    $d = random(-3,5);
    $A = Matrix([[$a,$b],[$c,$d]]);
} until ($a != 0 || $b != 0 || $c != 0 || $d != 0);

do {
    $a = random(-3,5);
    $b = random(-3,5);
    $c = random(-3,5);
    $d = random(-3,5);
    $B = Matrix([[$a,$b],[$c,$d]]);
} until ($a != 0 || $b != 0 || $c != 0 || $d != 0);

$ans1 = $A * $B;
$ans2 = $A * ($B->transpose);
$ans3 = $A * $A;
$ans4 = ($A - $B) * ($A + $B);

##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Suppose \( \displaystyle A = $A \) and \( \displaystyle B = $B \). Compute the following matrices:
$BR
$BR
\( \displaystyle AB \) = \{ $ans1->ans_array \}
$BR
\( \displaystyle AB^T \) = \{ $ans2->ans_array \}
$BR
\( \displaystyle A^2 \) = \{ $ans3->ans_array \}
$BR
\( \displaystyle (A-B)(A+B) \) = \{ $ans4->ans_array \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

$showPartialCorrectAnswers = 1;

ANS( $ans1->cmp() );
ANS( $ans2->cmp() );
ANS( $ans3->cmp() );
ANS( $ans4->cmp() );

ENDDOCUMENT();
