DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

COMMENT('This is a bit tricky.');

Context("Numeric");

{
$a = random(2,7,1);
$b = random(2,7,1);
}
$answer = Compute("(($b+$a*$b)*x+($b-$a*$b))/(-$a^2+1)")->reduce;

TEXT(beginproblem());

Context()->texStrings;
BEGIN_TEXT
Find a function \( f :\mathbb{R}\to\mathbb{R} \) such that
\( f(x-1) + $a f(1-x)=$b x \).
$PAR
\( f(x) =\)\{ ans_rule(40) \}

END_TEXT
Context()->normalStrings;

ANS( $answer->cmp() );

ENDDOCUMENT();
