## DESCRIPTION
##   Derivative of a Polynomial
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Calculus)
## DBchapter(Differentiation)
## DBsection(Derivatives of Polynomials and Exponential Functions)
## Institution(Alfred University)
## Status(-1)
## KEYWORDS('Derivative', 'Polynomial')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"MathObjects.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context()->variables->add(p=>'Real');
Context()->flags->set(reduceConstants=>0,reduceConstantFunctions=>0);
$a1 = non_zero_random(-7,7,1);
$b1 = non_zero_random(-12,12,1);
$c1 = non_zero_random(-40,40,1);
$n1 = random(2,7,1);
$n2 = random(2,10);
$num = Compute(random(1,5));
$den = Compute(random($num,10));
$f  = Formula("$a1*p^(-$n1)+$b1*p^($n2)+$c1*p^($num/$den)")->reduce;
$fx = $f->D('p');
Context()->texStrings;
BEGIN_TEXT
If \( r(p) =  $a1\frac{1}{p^{$n1}}+$b1 p^{$n2}+$c1 p^{\frac{$num}{$den}} \)
$BR
\( r'( p ) \)=\{$fx->ans_rule(48) \}
END_TEXT
Context()->normalStrings;
ANS($fx->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.