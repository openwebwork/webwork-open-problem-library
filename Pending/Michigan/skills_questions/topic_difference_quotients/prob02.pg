Context("Numeric");

$a = random(1,4,1);
$twoa = 2*$a;
$twoam1 = $twoa - 1;

$mc = new_multiple_choice();
$mc->qa( "Let \(f(x) = x - x^2\).  Simplify \(\frac{f($a + h) - f($a)}{h}\).",
	 "\(h - $twoam1\)" );
$mc->extra( "\(h + $twoam1\)", # random sign error
	    "\(h - 1 \)",      # -(a+h) = -a + h
	    "\(h + 1\)",       # (a+h)^2 = a^2 + h^2
	    "\(h - $twoa\)",   # f = -x^2
	    "\(h\)" );         # ?

TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT

\{ $mc->print_q() \}
\{ $mc->print_a() \}

END_TEXT
Context()->normalStrings;

ANS( radio_cmp( $mc->correct_ans() ) );

$asq = $a*$a;

Context()->texStrings;
BEGIN_SOLUTION

We have
\[ \begin{aligned} 
   \frac{f($a + h) - f($a)}{h} &=
   \frac{(($a + h) - ($a + h)^2) - ($a - $a^2)}{h}\\ &=
   \frac{$a + h - $asq - $twoa h - h^2 - $a + $asq)}{h}\\ &=
   \frac{-$twoam1 h + h^2}{h} = 
   -$twoam1 + h.\end{aligned} \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
