##DESCRIPTION
##  Rational Functions: Finding Vertical and Horizontal Asymptotes
##ENDDESCRIPTION

##KEYWORDS('algebra', 'polynomial', 'asymptote')

## DBsubject('Algebra')
## DBchapter('Polynomial and Rational Functions')
## DBsection('Rational Functions')
## Date('Spring 2012')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Institution('University of Missouri')
## TitleText1('College Algebra')
## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('4.5')

########################################
#  Initialization

DOCUMENT();

loadMacros(
   "PGstandard.pl",
   "PeriodicRerandomization.pl",
   "MathObjects.pl",
   "parserImplicitPlane.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;

#######################################
#  Set-up
Context()->variables->add( h=>"Real");

## Coefficients
$a = random(2,10,1);
do {$b = random(2,10,1)} until (gcd($a,$b) ==1);
$c =random(2,10,1);
do {$d = random(2,10,1)} until (gcd($c,$d) ==1 && gcd($a,$d) ==1);
$n = random(5,12,1);
$case = random(1,3,1);

Context("ImplicitPlane")->texStrings;
if($case ==1){
   $m = $n + random(2,5,1);
   $horiz = List(0);
   $dispans = "\($horiz\)";
   ANS( $horiz->cmp() );}
elsif($case ==2){
   $m = $n;
   $horiz = List($a/$d);
   ANS( $horiz->cmp() );
   $dispans = "\(y = \frac{$a}{$d}\)";}


Context()->strings->add("none"=>{},"undefined"=>{alias=>"none"});
if($case ==3){
   do {$m = $n - random(2,5,1)} until ($n - $m >= 3);
   ANS(String("None")->cmp);
   $dispans = "none";}





## Functions
if ($m != 1) {
  $f = " \frac{$a x^{$n} - $b}{$d x^{$m} + $c}";
} else {
  $f = " \frac{$a x^{$n} - $b}{$d x + $c}";
}

 
Context()->texStrings;
################################################
#  Main text

BEGIN_TEXT
Find the horizontal asymptote (if it exists) of the rational function 
$PAR
\[
f(x) = \displaystyle $f
\] 
$PAR
and if there is no asymptote, write ${BBOLD}none${EBOLD} in the blank provided.
$PAR
Horizontal Asymptote: \(y = \) \{ans_rule(20)\}
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} 
  $dispans
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 
################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();