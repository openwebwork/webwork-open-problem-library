########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PeriodicRerandomization.pl",
"MathObjects.pl",
"parserImplicitPlane.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


#######################################
#  Set-up
Context()->variables->add( h=>"Real");

## Coefficients
$a = random(2,10,1);
do {$b = random(2,10,1)} until (gcd($a,$b) ==1);
$c =random(2,10,1);
do {$d = random(2,10,1)} until (gcd($c,$d) ==1);


## Functions
$f = " \frac{$a x - $b}{$c - $d x}";

## Answers
$vn = $c/gcd($c,$d);
$vd = $d/gcd($c,$d);
$hn = $a/gcd($a,$d);
$hd = $d/gcd($a,$d);
$dv = "\frac{$vn}{$vd}";
$dh = "-\frac{$hn}{$hd}";
$vert1 = List($c/$d);
$horiz = List(-$a/$d);

#$ans = List($vert1, $horiz);
ANS( Compute($horiz)->cmp() );
ANS( Compute($vert1)->cmp() );
 
Context("Numeric")->texStrings;
################################################
#  Main text

BEGIN_TEXT
List all asymptotes (both horizontal and vertical) of the rational function 
$PAR
\[
f(x) = \displaystyle $f
\]
$PAR
and separate your answers by commas. 
$PAR
Horizontal Asymptote(s): \(y = \) \{ans_rule(50)\}
$PAR
Vertical Asymptote(s): \(x = \) \{ans_rule(50)\}
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} 
  \(y = $dh\), \(x = $dv\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();