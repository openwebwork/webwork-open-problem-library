########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PeriodicRerandomization.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"parserMultiAnswer.pl",
"PGunion.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up
Context()->variables->add(
h=>"Real",
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real",
L=>"Real",
F=>"Real",);

$var = list_random('t','s','u','v','p','q','r');

## Coefficients
$a = random(2,10,1);
$b = random(2,10,1);

## Functions
$f = " \displaystyle \frac{x - $a}{x + $b}";

## Test points
do {$e1 = non_zero_random(-7,7,1)} until ($e1 != -$b && $e1 != $a);
do {$e2 = non_zero_random(-7,7,1)} until ($e2 != $e1 && $e2 != -$b && $e2 != $a);

$ans5 = Compute("(x + h - $a)/ (x + h + $b) ");

Context("Fraction-NoDecimals");
Context()->operators->undefine("*", "+", "-" );

$ans1 = Fraction($e1 - $a, $e1 + $b);
$ans2 = Fraction($e2 - $a, $e2 + $b);
$ans3 = 0;

Context()->strings->add("undefined"=>{},"None"=>{alias=>"DNE"});

## Answers
ANS( Compute($ans1)->cmp() );
ANS( Compute($ans2)-> cmp() );
ANS( Compute($ans3)->cmp() );
ANS ( String("undefined")->cmp() );

 
Context("Numeric");
################################################
#  Main text

BEGIN_TEXT
Given the function \(f(x) = $f\), find the following values:
$PAR
$SPACE \( f($e1) = \) \{ans_rule(10)\} 
$BR
$SPACE \( f($e2) = \) \{ans_rule(10)\}
$BR
$SPACE \( f($a) = \) \{ans_rule(10)\}
$BR
$SPACE \( f(-$b) = \) \{ans_rule(10)\}
$PAR
Write "undefined" if the value does not exist or if the value is not a real number.
END_TEXT


Context()->texStrings;


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    $PAR
    \(f($e1) = $ans1\)
    $PAR
    \(f($e2) = $ans2\)
    $PAR
    \(f($a) = $ans3\)
    $PAR
    \(f(-$b)\) is undefined
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();