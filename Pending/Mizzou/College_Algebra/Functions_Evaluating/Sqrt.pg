DOCUMENT();

loadMacros(
   "PGstandard.pl",
   "PeriodicRerandomization.pl",
   "MathObjects.pl",
   "contextFraction.pl",
   "AnswerFormatHelp.pl",
   "PGcourse.pl",
   "parserMultiAnswer.pl",
