## Problem1('')

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGunion.pl",
"MathObjects.pl",
"PGcourse.pl",
"parserMultiAnswer.pl",
"contextLimitedPowers.pl",
"contextLimitedNumeric.pl",
"PeriodicRerandomization.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
PeriodicRerandomization("3");

###################################
# Setup

Context("Numeric");
Context()->{error}{msg}{"Operands of '*' can't be words"} = " ";

$m = random(-10,-5,1);
$n = random(12,15,1);
$s = $m + $n;

Context("Numeric");
Context("Numeric")->variables->add(y=>"Real");
Context()->functions->undefine("sin","cos","tan","sqrt");
Context()->functions->disable("abs","sqrt");
Context()->operators->undefine("*","+","-","/");

LimitedPowers::OnlyPositiveIntegers();
$ans = "y^{$s}";
$answer = Formula("y^{$s}")->reduce;

Context()->parens->remove("|");
Context()->{error}{convert} = sub {
 my $message = shift;
 $message =~ s/Unexpected character '~~|'/Absolute value is not allowed/;
 return $message;
};


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT

Simplify. Write your answer using positive exponents only.$PAR
$BCENTER
$PAR
\( y^{$m}\cdot y^{$n} \) =  \{ans_rule(10)\}.
$ECENTER
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    The answer is \($ans\).
    $PAR
    END_TEXT
}

Context()->normalStrings;

###################################
# Answers

ANS($answer->cmp() );
COMMENT('TRASH! REPEAT');
ENDDOCUMENT();