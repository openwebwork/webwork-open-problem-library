# DESCRIPTION
# Gives a linear equation in the form ax + by = c and asks to find intercepts
# algebraically
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Coordinates and Graphs')
## DBsection('Lines')
## KEYWORDS('x-intercepts', 'y-intercepts', 'lines')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "contextFraction.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$refreshCachedImages = 1;
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedFraction");
$A = non_zero_random(-20,20);
$B = non_zero_random(-20,20);
$C = non_zero_random(-20,20);
$line = "$A x + $B y = $C";
if ($A < 0) {
  $tmp1 = -$A;
  $tmp2 = -$C;
  $xint = Compute("$tmp2/$tmp1");
  $Adisp = -$A/gcd($A,$C);
  $CAdisp = -$C/gcd($A,$C);
} else {
  $xint = Compute("$C/$A");
  $Adisp = $A/gcd($A,$C);
  $CAdisp = $C/gcd($A,$C);
}
if ($B < 0) {
  $tmp3 = -$B;
  $tmp4 = -$C;
  $yint = Compute("$tmp4/$tmp3");
  $Bdisp = -$B/gcd($B,$C);
  $CBdisp = -$C/gcd($B,$C);
} else {
  $yint = Compute("$C/$B");
  $Bdisp = $B/gcd($B,$C);
  $CBdisp = $C/gcd($B,$C);
}

$dispx = "\left(";
if ($Adisp == 1) {
  $dispx = ($dispx).($CAdisp).", 0 \right)";
} else {
  if ($CAdisp < 0) {
    $tmp5 = -$CAdisp;
    $dispx = ($dispx)."-\frac{$tmp5}{$Adisp}, 0 \right) ";
  } else {
    $dispx = ($dispx)."\frac{$CAdisp}{$Adisp}, 0 \right) ";
  }
}

$dispy = "\left(0, ";
if ($Bdisp == 1) {
  $dispy = ($dispy).($CBdisp)." \right)";
} else {
  if ($CBdisp < 0) {
    $tmp6 = -$CBdisp;
    $dispy = ($dispy)."-\frac{$tmp6}{$Bdisp} \right)";
  } else {
    $dispy = ($dispy)."\frac{$CBdisp}{$Bdisp} \right)";
  }
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Find the \(x\)-intercept and \(y\)-intercept of the line: \( $line \)

$PAR
\(x\)-intercept: \(\big(\) \{ans_rule(5)\} , \{ans_rule(5)\} \(\big)\)
$BR
\(y\)-intercept: \(\big(\) \{ans_rule(5)\} , \{ans_rule(5)\} \(\big)\)
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($xint->cmp());
ANS(Compute("0")->cmp());
ANS(Compute("0")->cmp());
ANS($yint->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(x\)-intercept: \($dispx\), \(y\)-intercept: \($dispy\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


ENDDOCUMENT();