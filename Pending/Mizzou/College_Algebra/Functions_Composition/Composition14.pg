########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PeriodicRerandomization.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"parserMultiAnswer.pl",
"PGunion.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;

#######################################
#  Set-up
Context()->variables->add( h=>"Real");

## Coefficients
$c0 = non_zero_random(-10,10,1);
$c1 = random(-1,1,2)*random(2,10,1);
$c2 = random(-1,1,2)*random(2,10,1);
$c3 = random(-1,1,2)*random(2,10,1);
$a = random(2,10,1);
$b = non_zero_random(-10,10,1);

## Test Point
$e1 = random(-1,1,2)*random(2,10,1);

## Functions
$h = "$c3 ($a x + $b) ^3 + $c2 ($a x + $b)^2 + $c1 ($a x + $b) + $c0";
$g = "$c3 x^3 + $c2 x^2 + $c1 x + $c0";
$f = Compute("$a x + $b");
$dispf = "$a x + $b";

ANS( Compute($f)->cmp() );
   




 
################################################
#  Main text

BEGIN_TEXT
If \(h(x) = \displaystyle $h\) and \(g(x) = \displaystyle $g\), find \(f(x)\) such that \(h(x) = (g \circ f)(x)\).
$PAR
$SPACE \(f(x) = \) \{ans_rule(20)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} 
  \(f(x) = $dispf\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();