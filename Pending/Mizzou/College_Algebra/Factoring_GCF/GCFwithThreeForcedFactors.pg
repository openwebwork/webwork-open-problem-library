# DESCRIPTION
# Factor out the GCF of an expression of the form a x^(e1) + b x^(e2) + c x^(e3) + d x^(e4). All a,b,c,d 
# share a common factor and e4 < e3 < e2 < e1.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Expanding and Factoring')
## KEYWORDS('factoring', 'gcf', 'greatest common factor', 'factor', 'factorization')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "parserMultiAnswer.pl",
  "contextLimitedPowers.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
Context()->variables->are(x=>"Real", X=>"Real");
LimitedPowers::OnlyPositiveIntegers();

$gcf = random(2,5);
do {
  $at = random(2,16);
  $bt = random(2,16);
  $ct = random(2,16);
  $dt = random(2,16);
} until (gcd(gcd(gcd($at,$bt), $ct), $dt) == 1);
$a = $gcf*$at; $b = $gcf*$bt; $c = $gcf*$ct; $d = $gcf*$dt;
$e4 = random(2,7);
$e3 = $e4 + random(1,5);
$e2 = $e3 + random(1,5);
$e1 = $e2 + random(2,5);
$k1 = $e1 - $e4;
$k2 = $e2 - $e4;
$k3 = $e3 - $e4;

$aterm1 = "$at x^{$k1}";
$aterm2 = "$bt x^{$k2}";
$aterm3 = ($k3 == 1) ? "$ct x" : "$ct x^{$k3}";
$fac1 = "$gcf x^{$e4}";    $afac1 = Formula($fac1);
$fac2 = "$aterm1 + $aterm2 + $aterm3 + $dt";    $afac2 = Formula($fac2);

$expn = "$a x^{$e1} + $b x^{$e2} + $c x^{$e3} + $d x^{$e4}";

$texanswer = "\($expn = $fac1($fac2)\)";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Rewrite the expression by taking out the greatest common factor and putting it in front.
$PAR $BCENTER 
\($expn = \) \{ ans_rule(15) \} \( \big( \) \{ ans_rule(30) \} \( \big) \) 
$ECENTER
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($afac1->cmp());
ANS($afac2->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} $texanswer
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  ${BBOLD}Help:${EBOLD} You do not need to factor the remaining expression after factoring out the greatest common factor.
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Factor out the GCF of an expression of the form a x^(e1) + b x^(e2) + c x^(e3) + d x^(e4). All a,b,c,d share a common factor and e4 < e3 < e2 < e1.');
ENDDOCUMENT();