##################################
#  Initialization

DOCUMENT();

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "contextFraction.pl",
   "AnswerFormatHelp.pl",
   "parserMultiAnswer.pl",
   "PeriodicRerandomization.pl",
   "PGcourse.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real" );

$var = list_random('x','y','z','w','u','v','p','q');

$a = random(5,10,1);
$b = random(-1,1,2)*random(1,10,1);
$c = random(5,10,1);
$ac = $a + $c;
$d = random(2,5,1);

Context("Fraction-NoDecimals");
$end1 = Fraction($a - $b,$d);
$end2 = Fraction($a + $c - $b,$d);

$case = random(1,4,1);

Context("Interval")->strings->add("no solutions"=>{}, "no solution"=>{alias=>{"no solutions"}});
if($case ==1){
   $string1 = '<';
   $string2 = '<';
   $ans = Compute( " ($end1,$end2) " );
}
elsif($case ==2){
   $string1 = '\leq';
   $string2 = '<';
   $ans = Compute("[$end1,$end2) " );}
elsif($case == 3){
   $string1 = '<';
   $string2 = '\leq';
   $ans = Compute( " ($end1,$end2] " );}
elsif($case ==4){
   $string1 = '\leq';
   $string2 = '\leq';
   $ans = Compute( " [$end1,$end2] " );}
   
$ineq = "$a $string1 $d $var + $b $string2 $ac ";

ANS( Compute($ans)->cmp() );


##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality. Write your answer in interval notation or if no solutions exist write ${BBOLD}no solutions${EBOLD}. $PAR
\[
$ineq
\]
$PAR
Answer: \{ANS_RULE(10)\}


END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  if ($case == 1) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left($end1,$end2\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 2) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left[$end1,$end2\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 3) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left($end1,$end2\right]
    $PAR
    END_TEXT
  } else {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left[$end1,$end2\right]\)
    $PAR
    END_TEXT
  } 
} else {
    BEGIN_TEXT
   $PAR
  ${BBOLD}Help:${EBOLD} \{AnswerFormatHelp("intervals", "Click here for help entering intervals as answers.")\}
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();