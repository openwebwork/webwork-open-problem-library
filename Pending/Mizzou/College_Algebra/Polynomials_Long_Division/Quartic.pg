########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextLimitedPolynomial.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"PeriodicRerandomization.pl",
"parserRadioButtons.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up

Context()-texStrings;


Context()->flags->set(singlePowers=>1);
Context()->variables->add(
   y=>"Real",
   P=>"Real",
   Q=>"Real",
   d=>"Real",
   R=>"Real",
);

$b = random(2,5,1);
$c = random(2,5,1);
$d = random(2,5,1);
$a = - ($d)**2;

Context("LimitedPolynomial-Strict");
$Q = Compute("x^3 + $d x^2 + $b")->reduce;
$D = "x - $d";
$P = "x^4 + $a x^2 + $b x + $c ";
$r = $c + $d*$b;




################################################
#  Main text
Context()->texStrings;
BEGIN_TEXT

Given the polynomial \(P(x) = $P\) and divisor \(d(x) = $D\), find the quotient \(Q(x)\) and remainder \(R(x)\).  
$PAR
Write your answer in the form \( P(x) = d(x) Q(x) + R(x)\).
$PAR
$SPACE \($P = ($D) \big( \) \{ans_rule(25)\} \( \big) + \big( \) \{ans_rule(10)\} \( \big) \).
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($P = \left($D\right)\left($Q\right)+$r\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute($Q)->cmp() );
ANS( Compute($r)->cmp() );




COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();