########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextLimitedPolynomial.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"PeriodicRerandomization.pl",
"parserRadioButtons.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up

Context()-texStrings;


Context("LimitedPolynomial-Strict");
Context()->flags->set(singlePowers=>1);
Context()->variables->add(
   y=>"Real",
   P=>"Real",
   Q=>"Real",
   d=>"Real",
   R=>"Real",
);

$c0 = random(-1,1,2)*random(2,5,1);
$c1 = random(-1,1,2)*random(2,5,1);
$c2 = random(-1,1,2)*random(2,5,1);
$c3 = random(-1,1,2)*random(2,5,1);
$c4 = random(-1,1,2)*random(2,5,1);

$P = "$c4 x^4 + $c3 x^3 + $c2 x^2 + $c1 x + $c0 ";

$a = non_zero_random(-3,3,1);

$ans = $c4* ($a)**4 + $c3*  ($a)**3 + $c2* ($a)**2 + $c1*$a + $c0;


################################################
#  Main text

BEGIN_TEXT

Use synthetic division to find the function value listed below for the polynomial function \(P(x) = $P\).  
$PAR
$SPACE \(P($a) = \) \{ans_rule(10)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($ans\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 




################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute($ans)->cmp() );



COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();