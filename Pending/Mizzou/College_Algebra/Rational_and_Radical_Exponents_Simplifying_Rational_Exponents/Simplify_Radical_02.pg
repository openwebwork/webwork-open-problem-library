##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGunion.pl",
"MathObjects.pl",
"PGcourse.pl",
"parserMultiAnswer.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PeriodicRerandomization.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup

Context("Numeric")->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('p','q','r','u','v','x','y','z');
$var1 = list_random('x','y','z','w','v');
$var2 = list_random('p','q','r','u');

do  {
$n2 = random(3,7,1);
do {$n3 = random(3,7,1)} until ($n3 != $n2);
do {$b = random(2,10,1)} until (gcd($n2,$b) ==1);
do {$c = random(2,10,1)} until (gcd($n3,$c) ==1);
$num = $b*$n3 + $c*$n2;
$den = $n2*$n3;
} until ($num < $den);
$expression = "  \sqrt[$n2]{$var^{$b}} \cdot \sqrt[$n3]{$var^{$c}} ";
$RHS = "\sqrt[n]{$var^m}";


Context("Fraction-NoDecimals");
$m = $den/gcd($den,$num);
$n = $num/gcd($den,$num);

Context()->texStrings;
BEGIN_TEXT
Use rational exponents to simplify and write the following using a single radical. If
$PAR
\[$expression = $RHS \]
$PAR
then 
$PAR
\(n = \) \{ans_rule(5)\} and \(m = \) \{ans_rule(5)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(m = $n\), \(n = $m\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


$showPartialCorrectAnswers = 1;

ANS(Compute($m)->cmp(studentsMustReduceFractions=>1));
ANS(Compute($n)->cmp(studentsMustReduceFractions=>1));

COMMENT('MathObject version');
ENDDOCUMENT();