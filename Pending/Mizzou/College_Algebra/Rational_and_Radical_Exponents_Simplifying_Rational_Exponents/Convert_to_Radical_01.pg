#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGunion.pl",
"MathObjects.pl",
"PGcourse.pl",
"parserMultiAnswer.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PeriodicRerandomization.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup

Context("Numeric")->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('p','q','r','u','v','x','y','z');
$var1 = list_random('x','y','z','w','v');
$var2 = list_random('p','q','r','u');

do {
  $n = random(3,10,1);
  $m = random(3,20,1);
} until (gcd($n, $m) != 1 && $n != $m);

$tmp1 = min($n,$m);
$tmp2 = max($n,$m);
$n = $tmp1;
$m = $tmp2;

$na = $n/gcd($n,$m);
$ma = $m/gcd($n,$m);

$expression = " $var^{$n/$m}";

Context("Fraction-NoDecimals");


Context()->texStrings;
BEGIN_TEXT
Simplify and convert to radical notation. If
$PAR
\[$expression = \sqrt[m]{$var^n}\]
$PAR
then
$PAR
 \(m = \) \{ans_rule(5)\} and \(n = \) \{ans_rule(5)\}
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(m = $ma\), \(n = $na\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


$showPartialCorrectAnswers = 1;

ANS(Compute($ma)->cmp(studentsMustReduceFractions=>1) );
ANS(Compute($na)->cmp(studentsMustReduceFractions=>1) );

COMMENT('MathObject version');
