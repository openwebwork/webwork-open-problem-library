#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGunion.pl",
"MathObjects.pl",
"PGcourse.pl",
"parserMultiAnswer.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PeriodicRerandomization.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup

Context("Numeric")->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('p','q','r','u','v','x','y','z');
$var1 = list_random('x','y','z','w','v');
$var2 = list_random('p','q','r','u');



$a = random(2,10,1);
$b = random(2,10,1);
$c = random(3,8,1);
do {$d = random(2,10,1)} until (gcd($c, $d) ==1);
do {$e = random(2,10,1)} until ($e != $d && gcd($e,$c) ==1);

$expression = " \left($a $var^{\frac{$d}{$c}}\right)\left($b $var^{\frac{$e}{$c}}\right) ";

$answer1 = $a*$b;

Context("Fraction-NoDecimals");
$answer2 = Fraction($d + $e,$c);

Context()->texStrings;
BEGIN_TEXT
Simplify and write the following as a constant times a rational power of \($var\). If
$PAR
\[$expression = C $var^m \]
$PAR
then
$PAR
\(C = \) \{ANS_RULE(5)\}
$SPACE $SPACE and $SPACE $SPACE
\(m = \) \{ANS_RULE(5)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(C = $answer1\), \(m = $answer2\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


$showPartialCorrectAnswers = 1;

ANS(Compute($answer1)->cmp);
ANS($answer2->cmp(studentsMustReduceFractions=>1) );

COMMENT('MathObject version');
