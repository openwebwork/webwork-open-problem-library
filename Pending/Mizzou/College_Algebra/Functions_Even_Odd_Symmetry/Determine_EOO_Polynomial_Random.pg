## DESCRIPTION
## Asks to determine whether or a polynomial is even odd or neither
## ENDDESCRIPTION

##KEYWORDS('algebra', 'piecewise', 'function')

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Even and Odd')
## Date('Spring 2012')
## Author('Rick Lynch')
## Institution('University of Missouri')
## TitleText1('College Algebra')
## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('2.4')

########################################
#  Initialization

DOCUMENT();

loadMacros(
   "PGstandard.pl",
   "PeriodicRerandomization.pl",
   "MathObjects.pl",
   "AnswerFormatHelp.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


#######################################
#  Set-up
Context("Numeric");
Context()->strings->add("even"=>{}, "odd"=>{}, "neither"=>{});

## Coeffcicients
$eoo = random(0,2,1);
if ($eoo == 0) {
  $deg = random(4,8,2);
} elsif ($eoo == 1) {
  $deg = random(3,7,2);
} else {
  $deg = random(3,6,1);
}
@c = (0..$deg);

for ($i = 0; $i <= $deg; $i++) {
  if ($i % 2 == 0) {
    if ($eoo == 0 || $eoo == 2) {
      $c[$i] = non_zero_random(-6,6);
    } else {
      $c[$i] = 0;
    }
  } elsif ($i % 2 == 1) {
    if ($eoo == 1 || $eoo == 2) {
      $c[$i] = non_zero_random(-6,6);
    } else {
      $c[$i] = 0;
    }
  }
}

$dispfun = "";
$dispansfun = "";
$ansfun = "";
for ($i = $deg; $i >= 0; $i--) {
  if ($i == 0) {
    if ($c[$i] != 0) {
      $dispfun = ($dispfun)."+$c[$i]";
      $dispansfun = ($dispansfun)."+$c[$i]";
    }
  } elsif ($i == $deg) {
    if ($c[$i] == 1) {
      $dispfun = ($dispfun)." x^{$i}";
      if ($i % 2 == 0) {
        $dispansfun = ($dispansfun)."x^{$i}";
      } else {
        $dispansfun = ($dispansfun)."- x^{$i}";
      }      
    } elsif ($c[$i] == -1) {
      $dispfun = ($dispfun)."- x^{$i}";
      if ($i % 2 == 0) {
        $dispansfun = ($dispansfun)."- x^{$i}";
      } else {
        $dispansfun = ($dispansfun)."x^{$i}";
      }
    } else {
      $dispfun = ($dispfun)."$c[$i] x^{$i}";
      if ($i % 2 == 0) {
        $dispansfun = ($dispansfun)."$c[$i] x^{$i}";
      } else {
        $dispansfun = ($dispansfun)."-$c[$i] x^{$i}";
      }
    }
  } elsif ($i == 1) {
    if ($c[$i] == -1) {
      $dispfun = ($dispfun)."- x";
      if ($i % 2 == 0) {
        $dispansfun = ($dispansfun)."- x";
      } else {
        $dispansfun = ($dispansfun)."+ x";
      }
    } elsif ($c[$i] == 1) {
      $dispfun = ($dispfun)."+ x";
      if ($i % 2 == 0) {
        $dispansfun = ($dispansfun)."+ x";
      } else {
        $dispansfun = ($dispansfun)."- x";
      }
    } elsif ($c[$i] != 0) {
      $dispfun = ($dispfun)."+ $c[$i] x";
      if ($i % 2 == 0) {
        $dispansfun = ($dispansfun)."+ $c[$i] x";
      } else {
        $dispansfun = ($dispansfun)."- $c[$i] x";
      }
    }
  } else {
    if ($c[$i] == -1) {
      $dispfun = ($dispfun)."- x^{$i}";
      if ($i % 2 == 0) {
        $dispansfun = ($dispansfun)."- x^{$i}";
      } else {
        $dispansfun = ($dispansfun)."+ x^{$i}";
      }
    } elsif ($c[$i] == 1) {
      $dispfun = ($dispfun)."+ x^{$i}";
      if ($i % 2 == 0) {
        $dispansfun = ($dispansfun)."+ x^{$i}";
      } else {
        $dispansfun = ($dispansfun)."- x^{$i}";
      }
    } elsif ($c[$i] != 0) {
      $dispfun = ($dispfun)."+ $c[$i] x^{$i}";
      if ($i % 2 == 0) {
        $dispansfun = ($dispansfun)."+ $c[$i] x^{$i}";
      } else {
        $dispansfun = ($dispansfun)."- $c[$i] x^{$i}";
      }
    }
  }
  $ansfun = ($ansfun)."+$c[$i] ((-x)**($i))";
}

$ansfun = Formula($ansfun)->reduce;
if ($eoo == 0) {
  $dispansfun = $dispfun;
  $anseoo = "even";
} elsif ($eoo == 1) {
  $dispansfun = "-\left(".($dispfun)."\right)";
  $anseoo = "odd";
} else {
  $anseoo = "neither";
}


################################################
#  Main text

BEGIN_TEXT
Let \(f(x) = $dispfun\). Determine \(f(-x)\) first and then determine whether the function is even, odd, or neither. Write ${BBOLD}even${EBOLD} if the function is even, ${BBOLD}odd${EBOLD} if the function is odd, and ${BBOLD}neither${EBOLD} if the function is neither even nor odd.
$PAR
\(f(-x) =\) \{ans_rule(20)\}
$PAR
Even/Odd/Neither: \{ans_rule(20)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \(f(-x) = $dispansfun\) so the function is $anseoo
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{AnswerFormatHelp("formulas", "Click here for help entering formulas." )\}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute($ansfun)->cmp() );
ANS( String($anseoo)->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();