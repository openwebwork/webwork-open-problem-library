##################################
#  Initialization

DOCUMENT();

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "contextFraction.pl",
   "AnswerFormatHelp.pl",
   "parserMultiAnswer.pl",
   "PeriodicRerandomization.pl",
   "PGcourse.pl",
);

TEXT(beginproblem());


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real");

$var = list_random('x','y','z','w','u','v');

$a = list_random(2,3,4,5,10);
$a2 = $a**2;
$a3 = $a**3;

$case = random(1,4,1);

######endpoints
$end1 = -$a;
$end2 = $a;

Context("Interval");
if($case == 1){
   $string = '<';
   $ans = Compute( "(-inf,$end1)" ) ;}
elsif($case ==2){
   $string = '\leq';
   $ans = Compute( "(-inf,$end1]" ) ;}
elsif($case == 3){
   $string = '>';
   $ans = Compute( "($end1,$end2) U ($end2,inf)" ) ;}
elsif($case ==4){
   $string = '\geq';
   $ans = Compute( "[$end1,inf)" ) ;}

ANS( Compute($ans)-> cmp() );

$ineq = " $var^3 - $a $var^2 + $a2 $var^2 $string $a3 ";



##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
\{ANS_RULE(10)\}

END_TEXT

Context()->normalStrings;

$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();