DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "contextFraction.pl",
   "AnswerFormatHelp.pl",
   "PeriodicRerandomization.pl",
   "PGcourse.pl",
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "parserAssignment.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

$showPartialCorrectAnswers = 1;

$x1 = non_zero_random(-10,10,1);
do {$x2 = random(-10,10,1)} until ($x2 != $x1);
$y1 = non_zero_random(-10,10,1);
do {$y2 = non_zero_random(-10,10,1)} until ($y2 != $y1);
$m1num = random(-1,1,2)*random(2,5,1);
do {$m1den = random(-1,1,2)*random(2,5,1)} until (gcd($m1num, $m1den) == 1);
Context("Fraction-NoDecimals");
$m1 = Fraction($m1num, $m1den);
do {$b1 = non_zero_random(-10,10,1)} until ($b1 != $y1);
##$b1 = non_zero_random(-10,10,1);





$b = $y1 - $m*$x1;

Context("Numeric")->variables->are(x=>"Real",y=>"Real");
parser::Assignment->Allow;
parser::Assignment->Function("f");

$case = random(1,2,1);
if($case ==1){
   $string = 'parallel';
   $line = Formula(" y = $y1");
   $texans = "y = $y1";}
else{
   $string = 'perpendicular';
   $line = Formula(" x = $x1");
   $texans = "x = $x1";}



Context()->texStrings;
BEGIN_TEXT
Find the equation of the line though the point \( ($x1, $y1) \) and $string to the line \(y = $b1  \).
$PAR
\{ ans_rule(20) \}
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($texans\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



ANS( $line->cmp() );

ENDDOCUMENT();