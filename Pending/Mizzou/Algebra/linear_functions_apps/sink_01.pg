# DESCRIPTION
# Determine the airspeed of the swallow.
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Functions)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## Status(R)
## KEYWORDS('functions', 'algebra, application of linear equations')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "contextFraction.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction");
do {
  $t1 = random(2,6);
  $t2 = $t1 + random(2,6);
} until (gcd($t1,$t2) == 1);
$t = ($t1*$t2)/($t2-$t1);
$tf = Fraction($t1*$t2,$t2-$t1);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
A faucet can fill a sink in $t1 minutes while a drain can empty the same sink in $t2 minutes. If the faucet is turned on and the drain is left open, how long will it take to fill the sink?
$PAR
Answer: \{ans_rule(10)\} minutes
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($tf)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} $t minutes
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


ENDDOCUMENT();