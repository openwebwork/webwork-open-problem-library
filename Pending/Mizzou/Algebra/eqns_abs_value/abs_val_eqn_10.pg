# DESCRIPTION
# Solve an abs val eqn of the form k - |ax + b| = k, one solution.
# ENDDESCRIPTION

## DBsubject(Algebra)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## Status(N)
## KEYWORDS('linear', 'absolute value', 'equation')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "fracListChecker.pl", # contains custom checker and restricts context
  "MUHelp.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
PeriodicRerandomization("3");


###########################################################################
# setup contexts and variables 
###########################################################################
setFracList(); # set up context for custom checker
Context()->strings->add("no solution"=>{}, "none"=>{alias=>"no solution"}, "no solutions"=>{alias=>"no solution"});
$var = list_random('x','y','z','w','p','q','r','s','t','u','v');
Context()->variables->are($var=>"Real", uc($var)=>"Real");
Context()->functions->enable('sgn');

$a = random(2,20)*random(-1,1,2);
$b = -sgn($a)*random(1,20);
$k = non_zero_random(-15,15);
$eqn = "$k - \left| $a $var + $b\right| = $k";
$answer = List(Fraction(-$b,$a)->reduce);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var\):
$PAR \[ $eqn \] $PAR
\( $var = \) \{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp(checkFracList()));


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  $BBOLD Answer: $EBOLD \($var = $answer\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  $BBOLD Help: $EBOLD \{ MUHelp("absvaleqns") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus();

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Solve an abs val eqn of the form k - |ax + b| = k, one solution.');
ENDDOCUMENT();