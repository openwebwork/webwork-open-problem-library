##DESCRIPTION
##  Lines: Parallel and Perpendicular
##ENDDESCRIPTION


## BookTitle('Basic Algebra')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## DBsubject(Algebra)
## Date(Spring 2012)
## Institution(University of Missouri)
## Status(R)
## TitleText1('College Algebra')
## AuthorText1('Beecher, Penna, Bittinger')
## EditionText1('4')
## Section1('1.2')
## Problem1('')
## KEYWORDS('lines', 'slope')



DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "contextFraction.pl",
   "AnswerFormatHelp.pl",
   "PeriodicRerandomization.pl",
   "PGcourse.pl",
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "parserAssignment.pl",
);








TEXT(beginproblem());
PeriodicRerandomization("3");

$showPartialCorrectAnswers = 1;

$x1 = non_zero_random(-10,10,1);
$y1 = random(-10,10,1);
do {
  $x = non_zero_random(-10,10,1);
} until ($x != $x1);

Context("Numeric")->variables->are(x=>"Real",y=>"Real");
parser::Assignment->Allow;
parser::Assignment->Function("f");

$case = random(1,2,1);
if($case ==1){
   $string = 'perpendicular';
   $line = Formula(" y = $y1")->reduce;
   $texans = "y = $y1";}
elsif($case ==2){
   $string = 'parallel';
   $line = Formula(" x = $x1")->reduce;
   $texans = "x = $x1";}



Context()->texStrings;
BEGIN_TEXT
Find the equation of the line though the point \( ($x1, $y1) \) and $string to the line \(x = $x\).
$PAR
\{ ans_rule(20) \}
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($texans\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



ANS( $line->cmp() );
COMMENT('asks for line parallel or perpendicular to a vertical line');
ENDDOCUMENT();