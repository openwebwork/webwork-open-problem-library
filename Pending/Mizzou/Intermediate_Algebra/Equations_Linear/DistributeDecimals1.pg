#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PeriodicRerandomization.pl",
"PGcourse.pl",
);


##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup

Context("Fraction");

$a = random(2,5,1);
$b = random(6,9,1);
$c = random(6,9,1);
$d = random(2,5,1);

$adec = $a/10;
$cdec = $c/10;

$var = "x";
$eqn = "$adec (x - $b) = $cdec (x - $d)";

$num = -($a*$b - $c*$d);
$den = $c - $a;

$answer = Fraction($num,$den);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var\):
$PAR
\[
$eqn
\]
$BR
\( $var = \)
\{ ans_rule(20) \}
END_TEXT

Context()->strings->add("no solutions"=>{}, "infinitely many"=>{}, "no solution"=>{alias=>"no solutions"}, "none"=>{alias=>"no solutions"}, "all reals"=>{alias=>"infinitely many"});
if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($var = $answer\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $PAR
    ${BBOLD}Note:${EBOLD} Write ${BBOLD}no solutions${EBOLD} if no solutions exist or ${BBOLD}infinitely many${EBOLD} if there are infinitely many solutions. 
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp(studentsMustReduceFractions=>1) );


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();