# DESCRIPTION
# Asks to evaluate points using a constant function
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Evaluating and Solving')
## KEYWORDS('algebra', 'functions')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$c = non_zero_random(-99,99);

$x0 = random(-15,15);
do {$x1 = random(-15,15)} until ($x1 != $x0);
do {$x2 = random(-15,15)} until ($x2 != $x0 && $x2 != $x1);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
If \(f(x) = $c\), find the following:
$PAR
(a) \(f($x0)=\) \{ans_rule(10)\}
$PAR
(b) \(f($x1)=\) \{ans_rule(10)\}
$PAR
(c) \(f($x2)=\) \{ans_rule(10)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($c)->cmp());
ANS(Compute($c)->cmp());
ANS(Compute($c)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD}  (a) \($c\), $SPACE (b) \($c\), $SPACE (c) \($c\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();