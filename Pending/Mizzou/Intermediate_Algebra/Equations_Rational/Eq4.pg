##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"parserMultiAnswer.pl",
"PeriodicRerandomization.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context()->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('x','y','z','w','p','q','r','s','t','u','v');

$a = random(2,12,1);
do {$b = random(2,12,1)} until ($a != $b);
$c = random(-1,1,2)*random(2,10,1);

$eqn = " \displaystyle \frac{$a}{$var + $c} = \frac{$b}{$var}";
Context("Fraction-NoDecimals");
$ans = Fraction($b*$c, $a - $b);
ANS(Compute($ans)->cmp(studentsMustReduceFractions=>1));



##########################################

Context()->texStrings;
BEGIN_TEXT
$PAR
Solve the following equation for \($var\):
$PAR
\[
$eqn
\]
$PAR
\( $var = \) \{ ans_rule(20) \}
$PAR
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($var = $ans\)
    $PAR
    END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} If there is more than one correct answer, enter your answers as a comma separated list. If the equation has no real solution, write ${LQ}No Solution.${RQ}
  $BR
  END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 
$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();