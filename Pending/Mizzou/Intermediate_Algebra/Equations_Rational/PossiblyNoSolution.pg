##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"parserMultiAnswer.pl",
"PeriodicRerandomization.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup
Context("Fraction-NoDecimals");
Context()->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('x','y','z','w','p','q','r','s','t','u','v');

$a = random(-1,1,2)*random(2,5,1);
$b = random(-1,1,2)*random(2,5,1);
$c = random(2,3,1);
$d = random(2,5,1);
do {$f = random(2,3,1)} until ($f*$b + $d != 0);
do {$e1 = random(2,3,1)} until (gcd($e1, $a) ==1);



$case = random(1,2,1);
if($case ==1){
do {$e2 = random(2,5,1)} until (gcd($e2, $b) ==1);
$ans = Compute(" ($c*$f*$a + $c*$d - $b) / ($e2 - $c*$f*$e1) ") ;
ANS( Compute($ans)->cmp(studentsMustReduceFractions=>1));
$dispans = "\($var = $ans\)";}

Context()->strings->add("No Solution"=>{},"None"=>{alias=>"No Solution"});
if($case ==2){
$e2 = $c*$f*$e1;
ANS( String("No Solution")->cmp());
$dispans = "no solution";
}

#$eqn = " \displaystyle \frac{1}{$c($e1 $var + $a)}  - \frac{$d}{($e1 $var + $a)($e2 $var + $b)}= \frac{$f}{$e2 $var + $b}";

$den1 = Formula("($c*$e1 $var + $c*$a)")->reduce();
$mid = Compute("$a*$e2+$b*$e1");
$den2 = Formula("$e1*$e2*$var^2+$mid*$var+$a*$b")->reduce();

##########################################

Context()->texStrings;
BEGIN_TEXT
$PAR
Solve the following equation for \($var\):
$PAR
\[
\frac{1}{$den1}  - \frac{$d}{$den2}= \frac{$f}{$e2 $var + $b}
\]
$PAR
\( $var = \) \{ ANS_RULE(20) \}
$PAR
END_TEXT



if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    $dispans
    $PAR
    END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} If there is more than one correct answer, enter your answers as a comma separated list. If the equation has no real solution, write ${LQ}No Solution.${RQ}
  $BR
  END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 

$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();