##DESCRIPTION
## Linear Inequalities
## 
##ENDDESCRIPTION
## DBsubject('Intermediate Algebra')
## DBchapter('Ch 04: Inequalities and Problem Solving')
## DBsection('Solving Linear Inequalities')
## KEYWORDS('inequalities')
## TitleText1('Essentials of Intermediate Algebra')
## EditionText1('1')
## AuthorText1('Blitzer')
## Section1('4.1')
## Problem1('')
## Author('RA Cruz')
## Institution('The College of Idaho')
## Date: 2007/10

DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl",
  "answerHints.pl",
  "PeriodicRerandomization.pl",
  "AnswerFormatHelp.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

######################################
#  Setup

$a = non_zero_random(-4,4,1);
$b = non_zero_random(-5,5,1);

$d1 = list_random(2,3,4,5);
$d2 = list_random(2,3,4,5);
do {$d3 = list_random(2,3,4,5);} while($d1==$d3);

$d12 = $d1*$d2;
$d23 = $d2*$d3;
$d123 = $d1*$d2*$d3;
do {$c = random(1,8,1)} until (gcd($c,$d123) == 1);

######################################
#  Main text

BEGIN_TEXT
Solve the following inequality.  Write your answer using interval notation.
$PAR
\[ \frac{(x?{$a})}{$d12} - \frac{(x?{$b})}{$d23} \ge \frac{$c}{$d123} \]
$PAR
Answer: \{ans_rule(35) \}
END_TEXT

######################################
#  Answer

Context("Interval");
Context()->strings->add("No solution"=>{});

($num,$den)= reduce($b*$d1-$a*$d3+$c, $d3-$d1);
$n = "$num/$den";
if ($den==1) {$n = "$num";}

if ($d3-$d1>0) {
$ans = Compute("[$n,infinity)");}
else
{$ans = Compute("(-infinity, $n]");}
ANS($ans->cmp);

$showPartialCorrectAnswers = 1;

Context()->{error}{msg}{"Unexpected character '<'"} = "You must use interval notation.";
Context()->{error}{msg}{"Unexpected character '>'"} = "You must use interval notation.";

Context()->texStrings;
###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD}  \($ans\)
  $PAR
  END_TEXT
} else {
    BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{ AnswerFormatHelp("intervals","Click here for help entering intervals as answers.") \}
    $BR
    END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();