$mass = random(0.95,1.05,0.01);
$speed = random(0.995,0.999,0.001);
$gamma = 1/(1-$speed**2)**(1/2);
$momentum = $gamma*(1.67*10**-27)*$speed;
$ratio = $momentum/($mass*10**-18);

$E = $ratio/(1+($momentum)**2)**(1/2);

