$charge = sprintf("%0.2f", random(7,8.5,0.01));
$chargeSI = $charge*10**-3;
$voltage = sprintf("%0.1f",random(11.5,12.5,0.1));
$voltageSI = $voltage*10**6;

$capacitanceSI = ($chargeSI)/($voltageSI);
$capacitancepF = $capacitanceSI*10**12;

Context() -> texStrings;
BEGIN_TEXT

$PAR
$PAR

