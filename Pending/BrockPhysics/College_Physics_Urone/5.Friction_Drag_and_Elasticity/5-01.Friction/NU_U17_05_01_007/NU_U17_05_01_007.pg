$degree = random(2.00,9.00,1.00);
$rads = $degree*((2*pi)/360);
$usa = 1.0;
$g = 9.80;
$usb = 0.7;
$usc = 0.1;
$accelerationa = ($g)*[0.5*($usa)*cos($rads)+sin($rads)];
$accelerationb = ($g)*[0.5*($usb)*cos($rads)+sin($rads)];
$accelerationc = ($g)*[0.5*($usc)*cos($rads)+sin($rads)];


BEGIN_TEXT

