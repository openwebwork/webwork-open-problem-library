TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
$showHint = 3;

$c = 3.7*10**10;           #Becquerel to curie.
$Na = 6.022*10**23;

$half_life = 1.41*10**10;
$mass = random(350,400,5);
$mass_g = $mass*10**-3;
$M = 232;

$timeSI = ($half_life*86400*365.25);
$N = ($mass_g/$M)*($Na);
$activitySI = (0.693*$N)/($timeSI);

Context() -> texStrings;
BEGIN_TEXT 

$PAR
$PAR

