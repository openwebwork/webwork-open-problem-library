## TitleText('')
## AuthorText('')
## EditionText('')
## Section('')
## Problem('')
## KEYWORDS(electric circuit)


DOCUMENT();
loadMacros( "PGbasicmacros.pl",
                     "MathObjects.pl",
	             "PGauxiliaryFunctions.pl",
	             "PGchoicemacros.pl",
	             "PGanswermacros.pl",
                     "PG_CAPAmacros.pl",
                     "BrockPhysicsMacros.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
$showHint =3;

$R1 = random(30,100,5);
$R2 = random(40,105,5);
$R3 = random(22,122,5);
$R4 = random(32,132,5);
$R5 = random(15,120,5);
$E1 = random(50,100,1);
$E2 = random(20,30,1);
$I2 = abs(($E2)/($R2 + $R3 + $R4));
$I1 = abs(($E1 + $E2)/($R1 + $R5));
$I3 = $I2;
$I4 = $I2;
$I5 = $I1;

BEGIN_TEXT
\{ image( "Circuit_40.png", width=>300, height=>300,   tex_size=>700, extra_html_tags=>'alt="Circuit Example"' ) \}
$PAR
END_TEXT

BEGIN_TEXT
Determine the current flowing through each resistor if R<sub>1</sub> = $R1 \(\Omega\), R<sub>2</sub> = $R2 \(\Omega\), R<sub>3</sub> = $R3 \(\Omega\), R<sub>4</sub> = $R4 \(\Omega\), R<sub>5</sub> = $R5 \(\Omega\), \(\mathcal{E}_1\) = $E1 V, and \(\mathcal{E}_2\) = $E2 V.
$PAR
Current through resistor R<sub>1</sub> = \{ans_rule(20)\} A
$PAR
Current through resistor R<sub>2</sub> = \{ans_rule(20)\} A
$PAR
Current through resistor R<sub>3</sub> = \{ans_rule(20)\} A
$PAR
Current through resistor R<sub>4</sub> = \{ans_rule(20)\} A
$PAR
Current through resistor R<sub>5</sub> = \{ans_rule(20)\} A
$PAR

END_TEXT

ANS(num_cmp("$I1"));

ANS(num_cmp("$I2"));

ANS(num_cmp("$I3"));

ANS(num_cmp("$I4"));

ANS(num_cmp("$I5"));


ENDDOCUMENT()
