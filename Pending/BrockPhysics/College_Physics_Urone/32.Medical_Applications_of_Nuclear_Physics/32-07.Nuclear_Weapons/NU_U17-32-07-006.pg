DOCUMENT();
loadMacros( "PGbasicmacros.pl",
                     "MathObjects.pl",
	             "PGauxiliaryFunctions.pl",
	             "PGchoicemacros.pl",
                     "BrockPhysicsMacros.pl",
	             "PGanswermacros.pl",
                     "PG_CAPAmacros.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$MeV = random(150,250,1);
$kT = random(15,25,1);
$massPu = 239.05;
$JkT = 4.2*10**12;
$JMeV = 1.6*10**-13;
$Avogadro = 6.02*10**23;
$fissions = ($kT*$JkT)/($MeV*$JMeV);
$mass = (($fissions*$massPu)/$Avogadro)/1000;

BEGIN_TEXT
a) How many \(^{239}\)Pu nuclei must fission to produce a \($kT\)-kT yield, assuming \($MeV\) MeV per fission? 

$BR
$BR

\{ans_rule(40)\} fissions

$BR
$BR
END_TEXT

ANS(num_cmp("$fissions"));

BEGIN_TEXT
b) What is the mass of this much \(^{239}\)Pu?

$BR
$BR

\{ans_rule(40)\} kg

$BR
$BR
END_TEXT

ANS(num_cmp("$mass"));



ENDDOCUMENT()