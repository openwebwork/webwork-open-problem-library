DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.

rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real',t=>'Real');
$a=random(1,8,1);
$b=3*$a;
$A=Formula("0");
$B=Formula("pi/$b");
$u=Formula("cos($a*t)")->reduce;
$uA="\frac{1}{2}";
$uB=1;
$fu=Formula("1/u")->reduce;
$g=Formula("sin(t)");
$f=$fu->substitute(u=>$u);
$df=Formula("tan($a*t)")->reduce;
$Fu=Formula("ln(u)")->reduce;
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$cc=Compute("-1/($a)")->reduce;
if($cc== -1) {$cc ="-"};
$Bc=Compute("1/$a");
if($Bc== 1) {$Bc =""};
$C=Compute("1");
$ans=Compute("ln(2)/$a");
Context("Numeric");
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral by any method.
$PAR
\( \displaystyle \int^{$B}_{$A}  $df \;dt\) \(=\) \{ans_rule(20) \}
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($cc du = $g dt\) and \(u($A)=$uB,\;u($B)=$uA\), hence;
$PAR
\[ \displaystyle \int^{$B}_{$A} $df \;dt = $Bc \int^{$uB}_{$uA} $fu \;du=$Bc\left[ $Fu\right]^{$uB}_{$uA}=$Bc \left[$Fu\right]^{$uB}_{$uA}\]
\[=$Bc [\ln{1} - \ln{\small{\frac{1}{2}}} ]=$Bc \ln{2}\]
$BR
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
