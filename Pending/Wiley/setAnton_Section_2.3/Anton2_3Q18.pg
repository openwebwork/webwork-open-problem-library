DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl",  "littleneck.pl"          
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup

@d=([3,2],[5,2],[7,2],[9,2]
,[4,3],[5,3],[7,3],[8,3],[10,3]
,[5,4],[7,4],[9,4],[11,4]
,[6,5],[7,5],[8,5],[9,5]
);
$i = random(0,$#d,1);
($a,$b) = @{$d[$i]};
$adb="{$a/$b}";
$c=random(1,24,1);
$bc=$c*$b;
$e=$a-$b;
$edb="\frac{$e}{$b}";
$h=$e-$b;
$hdb="{$h/$b}";
$emc=$e-$b*$c;
if($emc/$b==int($emc/$b)){$ans=$emc/$b}
else{($num,$denom) = reduce($emc,$b);
  $ans="\frac{$num}{$denom}";
}
$f1="x^{$a/$b}} ";
$f2="$c x^{-1} ";
$f3="x^$edb";
$f4="$edb x^$hdb-$c x^{-2}";
$f="\frac{x^{$a/$b} +$c}{x} ";
$df2=Compute("($e*1**($a/$b)-$bc)/$b*1**2");
$df1=Compute("($e*x**($a/$b)-$bc)/($b*x**2)");
$df="\frac{$e x^{ $a/$b}-$bc}{$b x^2}";


###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
For \( y = $f \), find \(y'(x)\) and hence \( y'(1) \).
$PAR
\( y'(x)  =\) \{ans_rule(20) \}
$PAR
\( y'(1)  =\) \{ans_rule(20) \}
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($df1->cmp);
ANS($df2->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ y'(x)=\frac{d}{dx}(y(x))=\frac{d}{dx}($f)=\frac{d}{dx}($f3+$f2)=\frac{d}{dx}($f3)+\frac{d}{dx}($f2)\]
$BR
\[=$f4=\frac{$e x^{$adb}-$bc}{$b x^2}\]
$PAR
So that, \[y'(1)=\frac{$e (1)^{$adb}-$bc}{$b(1)^2}=\frac{$e-$bc}{$b}=$ans\]

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
