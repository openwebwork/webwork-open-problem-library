DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl",      "littleneck.pl"       
);
# allow the student to change the seed for this problem.

rand_button();

TEXT(beginproblem());

###################################
# Setup
     

$a=random(-9,10,1);
$b=random(-5,5,1);
if($b==-$a){$b=$b+random(2,3,1)}
if($b+$a==1){$b=$b+1}
if($b+$a==-1){$b=$b-1}
$c=($b+$a);
$ca=abs($c);

$f=Formula("ln|x+$a|")->reduce;
$df=$f->D->reduce;
$df2=Formula("1/(x+$a)")->reduce;
$y="\ln{$ca}";
if(abs($c)==1){$m=$c;$mx=Formula("$m*x")->reduce;
}
else{
$m="\frac{1}{$c}";$mx=Formula("x/$c")->reduce;
}
$d=$b/$c;
$nd=-$d;
if($d>0){
  if($d==int($d)){
     $ans=Compute("$mx-$d+ln($ca)");
     $ansd="-$d+$y";
  }
  else{
    ($n,$dn)=reduce($b,$c);
     $ans=Compute("$mx-($n/$dn)+ln($ca)");
     $ansd="-\frac{$n}{$dn}+$y";
   }
}
else {
   if($nd==int($nd)){
     $ans=Compute("$mx+$nd+ln($ca)");
     $ansd="+$nd+$y";
  }
  else{
    ($n,$dn)=reduce(-$b,$c);
     $ans=Compute("$mx+($n/$dn)+ln($ca)");
     $ansd="+\frac{$n}{$dn}+$y";
   }
}

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the equation of the tangent line to the graph of \(y=f(x)\) at \(x=$b\).
\[f(x)=$f\]
\(y=\)  \{ans_rule(20) \}
END_TEXT
###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
We have the point \(($b,\ln {$ca})\) and we find the slope
\[f'(x)=$df2\]
\[m=f'($b)=$m\]
and using the point-slope form of a line we get
\[y=$mx$ansd\]

END_SOLUTION
Context()->normalStrings;

