DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real');
$a=random(2,9,1);
$u=Formula("$a*x")->reduce;
$fu=Formula("sec^2(u)")->reduce;
$f=$fu->substitute(u=>$u);
$df=$f;
$Fu=Formula("tan(u)");
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$A=Compute("1/($a)");
Context("Numeric");
$ans=Compute("$A*$F");
if($A==1){$A=""}
if($A==-1){$A="-"}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral using an appropriate substitution.
$PAR
\( \displaystyle \int $df \;dx\) \(=\) \{ans_rule(40) \} \(+\) \(C\)
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;


ANS($ans->cmp(upToConstant=>1));

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($A du =  dx\) and hence;
$PAR
\[ \displaystyle \int $df \;dx = $A \int $fu \;du= $A $Fu+C=$A $F+C\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
