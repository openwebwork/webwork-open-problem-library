DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real');
$a=random(2,6,1);
$b=random(2,10,1)*random(-1,1,2);
$u=Formula("x**($a)")->reduce;
$fu=Formula("e**(u)")->reduce;
$f=$fu->substitute(u=>$u);
$g=Formula("$b*x**($a-1)")->reduce;
$df=$g*$f;
$Fu=Formula("e**(u)");
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$A=Compute("$b/$a");
$B=Compute("");
$C=Compute("$b/$a");
Context("Numeric");
$ans=Compute("$C*$F");
if($C==1){$C=""}
if($C==-1){$C="-"}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral using an appropriate substitution.
$PAR
\( \displaystyle \int $df \;dx\) \(=\) \{ans_rule(40) \} \(+\) \(C\)
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp(upToConstant=>1));

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($A du = $g dx\) and hence;
$PAR
\[ \displaystyle \int $df \;dx = $A \int $fu \;du= $A $Fu+C=$C $F+C\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
