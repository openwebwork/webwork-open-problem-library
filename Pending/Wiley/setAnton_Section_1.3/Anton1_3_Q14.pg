DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl", "contextFraction.pl" ,"littleneck.pl"        
);
# allow the student to change the seed for this problem.
rand_button();
TEXT(beginproblem());


###################################
# Setup  
$a=random(1,6,1);
$b=random(1,6,1);
$c=random(-8,10,1);
$s=random(-1,1,2);
$a=$a*$s;
$A=random(1,6,1);
$B=random(-6,6,1);
$C=random(0,10,1);
$S=random(-1,1,2);
$A=$A*$S;
Context("Fraction");
$ans=Compute("$a/$A")->reduce;
Context("Numeric");
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$f1=Formula("$a*x**2+$b*x+$c")->reduce;

$f2=Formula("$A*x**2+$B*x+$C")->reduce;
$f=$f1/$f2;

$g1=Formula("$a+$b/x+$c/x**2")->reduce;

$g2=Formula("$A+$B/x+$C/x**2")->reduce;
$g=$g1/$g2;

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the following limit.
$PAR
Notes: Enter "DNE" if limit Does Not Exist.$PAR
\(\displaystyle \lim_{x\to +\infty} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[\displaystyle \lim_{x\to +\infty} $f=\lim_{x\to +\infty} $g=$ans\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();