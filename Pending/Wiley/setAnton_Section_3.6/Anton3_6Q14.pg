DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl", "contextFraction.pl"    ,"littleneck.pl"       
);
# allow the student to change the seed for this problem.

rand_button();

TEXT(beginproblem());

###################################
# Setup
$index1=random(0,1,1);
$index2=random(0,1,1);
$a=random(-9,9,1);
if($a==0){$a=10}
$b=random(2,9,1);
$c=random(1,6,1);
if($a/$c==int($a/$c)){$c=1}
else{($a,$c)=reduce($a,$c)}

if($index2==0){
    $sign="+"; $sn=1;
}
else{
  $sign="-";$sn=-1;$b=-$b;
}
$g1=Formula("$a*e**($b*x)")->reduce;
$g2=Formula("$c*x**(2)")->reduce;
$ab=$b*$a;
$c2=2*$c;
$dg1=Formula("$ab*e**($b*x)")->reduce;
$dg2=Formula("$c2*x")->reduce;
$aab=$ab*$b;
$Dg1=Formula("$aab*e**($b*x)")->reduce;
$Dg2=Formula("$c2")->reduce;

@list=([$g1,$dg1,$Dg1],[$g2,$dg2,$Dg2]);


($nf,$dnf,$Dnf)=@{$list[$index1]};
($df,$ddf,$Ddf)=@{$list[abs($index1-1)]};

$f=$nf/$df;
$F=$dnf/$ddf;
$Ff=$Dnf/$Ddf;
if($index1==0){
$Sig=($a <=> 0);
if($Sig==1){
$ans=Compute("+inf");
$ansd="+ \infty";
}
else{
$ans=Compute("-inf");
$ansd="- \infty";}
}
else{
$ans=Compute("0");
$ansd=$ans;

}


###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
\(\displaystyle \lim_{x\to $sign\infty} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\(\displaystyle \lim_{x\to $sign\infty} $f=\lim_{x\to $sign\infty}  $F=\lim_{x\to $sign\infty}$Ff=$ansd\)
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();