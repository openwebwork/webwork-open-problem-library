DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl", "contextFraction.pl", "littleneck.pl"       
);
# allow the student to change the seed for this problem.

rand_button();

TEXT(beginproblem());

###################################
# Setup
#Context("Fraction");
Context()->variables->are(x0=>'Real',x=>'Real'); 
$s=random(2,5,1);
$sq=$s**2;
$s2=2*$s;
$sq2=2*$sq;
$x=random(0,$sq-1,1);
$a=$sq-$x;
$A=$sq-0.1;
$fxA=$x-0.1;
$Ax=$A+$x;
$B=$sq+0.1;
$fxB=$x+0.1;
$Bx=$B+$x;
$f=Compute("$s+(x-$x)/$s2");
$Bp=($sq2+0.1)/$s2;
$Ap=($sq2-0.1)/$s2;
$Ap=Compute("$Ap");
$Bp=Compute("$Bp"); 
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the local linear approximation of the function \(f(x)=\sqrt{$a+x}\) at \(\small{x_0=$x}\), and use it to approximate \(\sqrt{$A}\) and \(\sqrt{$B}\).
$PAR
(a) \(f(x)=\sqrt{$a+x}\approx\) \{ans_rule(20) \}
$PAR
(b) \(\sqrt{$A}\approx\) \{ans_rule(20) \}
$PAR
(c) \(\sqrt{$B}\approx\) \{ans_rule(20) \}
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($f->cmp);
ANS($Ap->cmp);
ANS($Bp->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
(a) Let \(f(x)\approx f(x_0)+f'(x_0)(x-x_0)=\sqrt{$sq}+\frac{(x-x_0)}{2\sqrt{$sq}}=$f\).
$PAR
(b) \(\sqrt{$A}=f($fxA)\approx $s+\frac{$fxA-$x}{$s2}=$Ap\)
$PAR
(c) \(\sqrt{$B}=f($fxB)\approx $s+\frac{$fxB-$x}{$s2}=$Bp\)
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
