#***************************************************************
#   Initialization - Load standard PG and MathObjects macros   
#***************************************************************
DOCUMENT();
loadMacros("PGstandard.pl","MathObjects.pl",
           "PGgraphmacros.pl","littleneck.pl","contextFraction.pl" );
#
# Set Up - Set up variable context and formulation of problem
#
# allow the student to change the seed for this problem.

rand_button();
Context("Numeric");
Context()->variables->add(y=>'Real',u=>'Real');
#***********************************

#***********************************
$b=random(1,4,1);$a=$b*3;$B=$b**2;$as=$a**2;
$C=$B*(1+$B);$D=1+$B;

$f=Formula("y^3/$a")->reduce;
$df=Formula("y^2/$b")->reduce;
$h=Formula("y^3/(3*$b**2)*sqrt($b**2+y^4)")->reduce;
$u=Formula("$b**2+y^4")->reduce;
$dx=Formula("4*y^3")->reduce;
$h2=Formula("sqrt(u)")->reduce;
$A=Formula("pi/(6*$b**2)")->reduce;
$A2=Formula("pi/(9*$b**2)")->reduce;
($bn,$bd)=reduce($b,9);
$A3=Formula("$bn*pi/($bd)")->reduce;
$H=Formula("sqrt(u^3)")->reduce;
$g1="($a*x)^(1/3)";
$ans=Compute("$A3*[$D*sqrt($D)-1]");
#***********************
#   Plot the function
#***********************

$grminX=Compute("-2");
$grmaxX=Compute("$a**2+1");

$xgrid=Compute("8");
$grmaxY=Compute("$a+2");
$grminY=Compute("-2");

$ygrid=Compute("8");
$f1minX= $grminX;
$f1maxX = $grmaxX;

$gr = init_graph($grminX,$grminY,$grmaxX,$grmaxY,
                 'axes'=>[0,0],'ticks'=>[$xgrid,$ygrid],'grid' =>[$xgrid,$ygrid],'size'=>[500,500]);

plot_functions($gr, "$g1 for x in <0,$f1maxX> using color:blue and weight:4");

plot_functions($gr, "$g1 for x in <0,$as> using color:red and weight:4");
 
 
 # add a label

#******************

# *********************
#   Problem Statement
# *********************

TEXT(beginproblem());
#
# Strings in Tex form (formula)
#
Context()->texStrings;
BEGIN_TEXT
$PAR
Find the area of the surface generated by revolving the given curve about the \(y\)-axis. 
$BR
$PAR
\(x = $f,\; 0\leq y\leq $b\\)
$PAR

Surface Area  \(=\) \{ans_rule(20) \}



END_TEXT

Context()->normalStrings;
#
# Expect strings in standard form
#
# *******************************
#   Answer and Solution section
# *******************************
#
# Check student solution
#
ANS($ans->cmp());
Context()->texStrings;
#***************************
#  Explanation of solution  
#***************************
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
With \(f(y)=$f,\;a=0,\;b=$b\)$PAR
Surface Area \[=\int_{a}^{b} 2\pi f(y) \sqrt{1+[f'(y)]^2}\;dy=2\pi\int_{0}^{$b}  $f \sqrt{1+\left[$df\right]^2}\;dy=2\pi\int_{0}^{$b}$h \;dy\]
We now do a \(\small{u}\)-substitution \(u=$u,\;du=$dx\;dx,\;u(0)=$B,\;u($b)=$C\)
\[2\pi\int_{0}^{$b}  $h \;dy=$A\int_{$B}^{$C}  $h2 \;du=$A2\left[$H\right]_{$B}^{$C}=$A3\left[$D\sqrt{$D}-1\right]\]

The surface area is \($A3\left[$D\sqrt{$D}-1\right]\).

END_SOLUTION
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BCENTER
$PAR
(click on image to enlarge) 
$BR
\{ image(insertGraph($gr,tex_size=>300,height=>100,width=>100)) \}
$BR


$ECENTER
END_SOLUTION
Context()->normalStrings;
ENDDOCUMENT();