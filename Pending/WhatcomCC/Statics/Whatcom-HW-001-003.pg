[`\vec{\mathbf{F}}_{T}=`] [`(`][_____]{"$F_ABx"}[`\hat{i}`] [`+`] [_____]{"$F_ABy"}[`\hat{j}`] [`+`] [_____]{"$F_ABz"}[`\hat{k})`] [`cm`] 

