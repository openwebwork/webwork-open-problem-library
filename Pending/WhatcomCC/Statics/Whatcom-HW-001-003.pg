[`\vec{\mathbf{r}}_{AD}=`] [`(`][_____]{"$rADx"}[`\hat{i}`] [`+`] [_____]{"$rADy"}[`\hat{j}`] [`+`] [_____]{"$rADz"}[`\hat{k})`] [`cm`]  

