Context("Numeric");

#given
$F = random(100,1000,10);
$g = random(12,60,1);
$a = floor($g*random(.2,.3,.02));
$b = floor($g*random(.4,.6,.02));
$c = floor($b*random(.75,1.25,.1));
$d = floor($g*random(1.2,1.5,.1)); 
$h = floor($g*random(.85,.95,.1));

#computation 
$mag = sqrt($b**2+$a**2+$c**2);
$Fx = $F*$b/$mag;
$Fy = -$F*$a/$mag;
$Fz = -$F*$c/$mag;
$rDA = sqrt($g**2+$d**2+$h**2);
$uDAx = $g/$rDA;
$uDAy = $d/$rDA;
$uDAz = $h/$rDA;
$Fdotu = $Fx*$uDAx + $Fy*$uDAy + $Fz*$uDAz;
$FPar_x = $Fdotu*$uDAx;
$FPar_y = $Fdotu*$uDAy;
$FPar_z = $Fdotu*$uDAz;
$FPerp_x = $Fx - $FPar_x;
$FPerp_y = $Fy - $FPar_y;
$FPerp_z = $Fz - $FPar_z;

#set tolerance
Context()->flags->set(
tolerance=>.01);

