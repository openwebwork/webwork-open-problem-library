Context("Numeric");

#given
$Dmax = random(15000,25000,1000);
$a = random(4,8,0.1);
$b = $a*random(1.4,1.9,0.1);
$c = $a*random(0.5,0.8,0.05);

#computation 
$theta = arctan($c/$a);

$wmax = (3*$Dmax*$a*sin($theta))/($a+$b)**2;
$Ay = $wmax*($a+$b)/2-$Dmax*sin($theta);
$Ax = -$Dmax*cos($theta);
$Cx = $Dmax*cos($theta);
$Cy = $Dmax*sin($theta);

#set tolerance
Context()->flags->set(
tolerance=>.01);

