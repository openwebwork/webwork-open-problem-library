[`w_{max}=`] [_____]{"$wmax"} [`N/m`]  

[`\vec{\mathbf{R}}_A=`] [`(`][_____]{"$Ax"}[`\hat{i}`] [`+`] [_____]{"$Ay"}[`\hat{j})`] [`N`]  
[`\vec{\mathbf{R}}_C=`] [`(`][_____]{"$Cx"}[`\hat{i}`] [`+`] [_____]{"$Cy"}[`\hat{j})`] [`N`]  

