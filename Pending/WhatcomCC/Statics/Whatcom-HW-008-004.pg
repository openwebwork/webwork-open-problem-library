##############################################################
#
#  Setup
#
#

Context("Numeric");

#given
$F = random(500, 800, 10);
$w = random(100, 200, 10);
$a = random(3, 6, 0.2);
$b = $a*random(0.5,0.7,0.05);
$c = $a*random(0.5,0.7,0.05);

#computation 
$D = ($w*$a**2/2+$F*($a+$b))/($a+$b+$c);
$A = $w*$a+$F-$D;
$MBC_const = $A*$a-$w*$a**2/2-($F-$D)*$a;
$MBC_term1 = $F-$D;
$MCD_const = $D*($a+$b+$c);
$VAB = Formula("$A-$w*x");
$VBC = Formula("$F-$D");
$VCD = Formula("-$D");
$MAB = Formula("$A*x-$w*x**2/2");
$MBC = Formula("$MBC_term1*x+$MBC_const");
$MCD = Formula("-$D*x+$MCD_const");

#set tolerance
Context()->flags->set(
tolerance=>.02);

