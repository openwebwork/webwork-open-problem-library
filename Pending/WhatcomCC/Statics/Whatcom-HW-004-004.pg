Context("Numeric");

#given
$F = random(100,300,5);
$g = random(12,60,1);
$a = sprintf("%0.1f",$g*random(.2,.3,.02));
$b = sprintf("%0.1f",$g*random(.4,.6,.02));
$c = sprintf("%0.1f",$b*random(.75,1.25,.1));
$d = sprintf("%0.1f",$g*random(1.2,1.5,.1)); 
$h = sprintf("%0.1f",$g*random(.85,.95,.1));

#computation 
$Dz = 0;
$Cx = 0;
$Bx = 0;

$mag = sqrt($b**2+$a**2+$c**2);
$Fx = $F*$b/$mag;
$Fy = -$F*$a/$mag;
$Fz = -$F*$c/$mag;

$Dx = -$Fx;
$Bz = ($h*$Fx-$g*$Fz)/$g;
$By = ($d*$Fx-$g*$Fy)/$g;
$Cy = ($d*$Fz-$h*$Fy-$h*$By)/$h;
$Cz = -$Bz-$Fz;
$Dy = -$Cy-$By-$Fy;

#set tolerance
Context()->flags->set(
tolerance=>.01);

