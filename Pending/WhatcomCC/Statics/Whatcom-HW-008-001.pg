Context("Numeric");

#given
$F = random(40,70,1);
$d = random(8,15,.1);
$c = floor($d*100*random(.03,.09,.02)+.5)/100;
$b = floor($d*10*random(.3,.6,.01)+.5)/10;
$a = floor($b*100*random(.25,.55,.01)+.5)/100; 
$h1 = floor($d*100*random(.25,.35,.01))/100;
$h2 = floor($d*10*random(.6,.7,.01)+.5)/10;

#computation 
$Ey = $F*$d/$c;

$A = 0 ;#no axial load
$V = $Ey;
$M = -$Ey*$b/2;

#set tolerance
Context()->flags->set(
tolerance=>.01);

