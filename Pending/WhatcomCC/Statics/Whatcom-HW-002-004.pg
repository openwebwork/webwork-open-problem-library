##############################################################
#
#  Setup
#
#

Context("Matrix");

#given
$a = random(30,50,2);
$b = random(29,49,2);
$c = $a*random(.15,.35,.025);
$h = random(30,50,1);
$W = random(500,900,5);

#computation 
$rADx = -$b/2;
$rADy = $a/2;
$rADz = -$h;
$rADmag = sqrt($rADx**2+$rADy**2+$rADz**2);
$uADx = $rADx/$rADmag;
$uADy = $rADy/$rADmag;
$uADz = $rADz/$rADmag;
$rACx = $b/2;
$rACy = $c-$a/2;
$rACz = -$h;
$rACmag = sqrt($rACx**2+$rACy**2+$rACz**2);
$uACx = $rACx/$rACmag;
$uACy = $rACy/$rACmag;
$uACz = $rACz/$rACmag;
$rABx = -$b/2;
$rABy = -$a/2;
$rABz = -$h;
$rABmag = sqrt($rABx**2+$rABy**2+$rABz**2);
$uABx = $rABx/$rABmag;
$uABy = $rABy/$rABmag;
$uABz = $rABz/$rABmag;

$A = Matrix("[[$uADx,$uACx,$uABx],[$uADy,$uACy,$uABy],[$uADz,$uACz,$uABz]]");
$B = Matrix("[[0],[0],[-$W]]");

$ans = ($A->inverse)*($B);
$FAB = $ans->element(3,1);
$FAC = $ans->element(2,1);
$FAD = $ans->element(1,1);

#set tolerance
Context()->flags->set(
tolerance=>.01);

