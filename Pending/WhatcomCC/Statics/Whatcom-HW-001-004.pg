Context("Numeric");

#given
$F = random(1000,2000,25);
$a = random(4,8,.2);
$b = random(11,15,.2);
$c = random(10,15,.2);
$d = random(8,12,.2);
$h = random(4,8,.2);
$k = random(12,15,.2);

#computation 
$rAC = sqrt($k**2+($c-$a)**2);
$rAD = sqrt($k**2+$d**2+$a**2);
$theta = arccos(($k**2+(-$a)*($c-$a))/($rAD*$rAC))*180/pi;
$g = ($a+$h)*($c-$a)/$k; #solution worked out external by setting F dot u_AC = 0

#set tolerance
Context()->flags->set(
tolerance=>.01);

