## MO(1)
## KEYWORDS('order of operations','evaluate')

##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "answerHints.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");

$a=random(2,5,1);
$b=random(2,4,1);
$c=random(2,3,1);

$ans=$a*$b**$c;
$ans=Compute($ans);


##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate this expression:

    [`` [$a]\cdot[$b]^{[$c]}=  ``]  [________]{$ans}


END_PGML

##############################################

$s1 = $b**$c;

BEGIN_PGML_SOLUTION

In the order of operations, exponents take priority above multiplication.

    [` 
        \begin{aligned}[t]
         [$a]\cdot[$b]^{[$c]}  & = [$a]\cdot[$s1]  \\
                             & = [$ans] 
        \end{aligned}
     `]

END_PGML_SOLUTION

ENDDOCUMENT();


