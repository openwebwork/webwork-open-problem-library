##############################################
DOCUMENT();

loadMacros(
      "PGstandard.pl",
      "MathObjects.pl",
      "answerHints.pl",
      "PGML.pl",
      "PCCmacros.pl",
      "PGcourse.pl",
);

##############################################
    
Context("Numeric");
Context()->flags->set(reduceConstants=>0, reduceConstantFunctions=>0, formatStudentAnswer=>parsed);
Context()->noreduce('(-x)-y','(-x)+y');

Context()->variables->add(i=>'Real');

$a0 = 0;
$b0 = 1;
$a1 = non_zero_random(-12,12,1);
$b1 = non_zero_random(-12,12,1);

$num0 = Compute("$a0+$b0*i")->reduce;
$num1 = Compute("$a1+$b1*i")->reduce;

$ansA = $a0*$a1-$b0*$b1;
$ansB = $a0*$b1+$a1*$b0;

$ans = Compute("$ansA+$ansB*i")->reduce;

##############################################

TEXT(beginproblem());
BEGIN_PGML

Subtract the following complex numbers:

     [`` [$num0]([$num1]) = ``][___________]{$ans}

END_PGML

##############################################

$c1 = Compute("$a1*i")->reduce;


$d1 = Compute("$b1*i")->reduce;
$d2 = Compute("$b1*i**2")->reduce;

$output = ($b1==1) ? "(-1)" : "($b1)(-1)";

$d3 = Compute("$b1*(-1)")->reduce;

BEGIN_PGML_SOLUTION

    [`` 
\begin{aligned}
   &\phantom{{}=} [$num0]([$num1]) \\
   &= [$c1]+([$d1])i \\
   &= [$c1]+([$d2]) \\
   &= [$c1]+ [$output] \\
   &= [$c1]+([$d3]) \\
   &= [$ans]
\end{aligned}
    ``]

END_PGML_SOLUTION

##############################################

ENDDOCUMENT();
