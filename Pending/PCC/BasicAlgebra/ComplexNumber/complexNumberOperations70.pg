##############################################
DOCUMENT();

loadMacros(
      "PGstandard.pl",
      "MathObjects.pl",
      "answerHints.pl",
      "PGML.pl",
      "PCCmacros.pl",
      "PGcourse.pl",
);

##############################################
    
Context("Numeric");
Context()->flags->set(reduceConstants=>0, reduceConstantFunctions=>0, formatStudentAnswer=>parsed);
Context()->noreduce('(-x)-y','(-x)+y');

Context()->variables->add(i=>'Real');

$a0 = non_zero_random(-12,12,1);
$b0 = non_zero_random(-12,12,1);
$a1 = $a0;
$b1 = $b0;

$num0 = Compute("$a0+$b0*i")->reduce;
$num1 = Compute("$a1+$b1*i")->reduce;

$ansA = $a0*$a1-$b0*$b1;
$ansB = $a0*$b1+$a1*$b0;

$ans = Compute("$ansA+$ansB*i")->reduce;

##############################################

TEXT(beginproblem());
BEGIN_PGML

Subtract the following complex numbers:

     [`` ([$num0])^{2} = ``][___________]{$ans}

END_PGML

##############################################

$c0 = Compute("$b0*i")->reduce;
$c1 = Compute("$b1*i")->reduce;

BEGIN_PGML_SOLUTION

    [`` 
\begin{aligned}
   &\phantom{{}=} ([$num0])^{2} \\
   &= ([$num0])([$num0]) \\
   &= ([$a0])([$a1])+([$a0])([$c1])+([$c0])([$a1])+([$c0])([$c1]) \\
   &= ([$a0*$a1])+([$a0*$b1]i)+([$a1*$b0]i)+([$b0*$b1]i^{2}) \\
   &= ([$a0*$a1])+([$a0*$b1]i)+([$a1*$b0]i)+([$b0*$b1])(-1) \\
   &= ([$a0*$a1])+([$a0*$b1]i)+([$a1*$b0]i)+([$b0*$b1*-1]) \\
   &= ([$a0*$a1]+[$b0*$b1*-1])+([$a0*$b1]+[$a1*$b0])i \\
   &= [$ans]
\end{aligned}
    ``]

END_PGML_SOLUTION

##############################################

ENDDOCUMENT();
