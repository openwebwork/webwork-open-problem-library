# constant
$a = 0.05;

# randomized parameters

$J0_mm = Real(random(25, 250, 25)); 	# A/m
$r1 = Real(random(0.01, 0.04, 0.01));
$r2 = Real(random(0.06, 0.09, 0.01));

=pod
