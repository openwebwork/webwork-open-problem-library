DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",

"parserFunction.pl",
"answerHints.pl",
"PGcourse.pl",
"parserVectorUtils.pl",
"PGchoicemacros.pl",

);

 TEXT(beginproblem());

Context("Vector");
Context()->flags->set(
tolerance => 0.01,
tolType => "absolute",
);



Context()->variables->remove('x','y','z');
Context()->constants->add(
  x => {value => i, TeX => '\bf{\hat x}', perl => 'i'},
  y => {value => j, TeX => '\bf{\hat y}', perl => 'j'},
  z => {value => k, TeX => '\bf{\hat z}', perl => 'k'},
);
Context()->constants->set(
  i => {string => 'x', TeX => '\bf{\hat x}'},
  j => {string => 'y', TeX => '\bf{\hat y}'},
  k => {string => 'z', TeX => '\bf{\hat z}'},
);


$A1x=random(1,5,1);
$A1y=random(1,5,1);

$A2x=random(-10,-1,1);
$A2y=random(1,10,1);

$A3x=random(-10,-5,1);
$A3y=random(-1,-5,1);

$A4x=random(1,10,1);
$A4y=random(-10,-1,1);


$Vec1=Vector($A1x,$A1y);
$Vec2=Vector($A2x,$A2y);
$Vec3=Vector($A3x,$A3y);
$Vec4=Vector($A4x,$A4y);

$Veca1=Vector($A1x/norm($Vec1)*$A1y/norm($Vec1),$A1y/norm($Vec1)*$A1y/norm($Vec1));
$Veca2=Vector($A2x/norm($Vec2)*$A2y/norm($Vec2),$A2y/norm($Vec2)*$A2y/norm($Vec2));
$Veca3=Vector($A3x/norm($Vec3)*$A3y/norm($Vec3),$A3y/norm($Vec3)*$A3y/norm($Vec3));
$Veca4=Vector($A4x/norm($Vec4)*$A4y/norm($Vec4),$A4y/norm($Vec4)*$A4y/norm($Vec4));


$fig[1]=image('ECE303_Ulaby_Ed7_3_20_P1a.png',width => 280,height => 250);
$fig[2]=image('ECE303_Ulaby_Ed7_3_20_P1b.png',width => 250,height => 280);
$fig[3]=image('ECE303_Ulaby_Ed7_3_20_P1c.png',width => 270,height => 250);
$fig[4]=image('ECE303_Ulaby_Ed7_3_20_P1d.png',width => 270,height => 250);
$fig[5]=image('ECE303_Ulaby_Ed7_3_20_P1e.png',width => 270,height => 250);
$fig[0]=image('ECE303_Ulaby_Ed7_3_20_P1f.png',width => 250,height => 250);


$mc = new_multiple_choice();
$mc->qa('Select the graph that represents the vector field of \( \hat{\textbf{r}} sin \phi \):','$fig[0] $BR $BITALIC(click on image to enlarge)$EITALIC');

$mc->extra('$fig[1] $BR $BITALIC(click on image to enlarge)$EITALIC',
'$fig[2] $BR $BITALIC(click on image to enlarge)$EITALIC',
'$fig[3] $BR $BITALIC(click on image to enlarge)$EITALIC',
'$fig[4] $BR $BITALIC(click on image to enlarge)$EITALIC',
'$fig[5] $BR $BITALIC(click on image to enlarge)$EITALIC',);

$mc->makeLast('None of the above');

## force a refresh of the image after changes
$refreshCachedImages = 1;


Context()->texStrings;
BEGIN_TEXT
$BBOLD This problem is related to Problem 3.20 in the "The Fundamentals of Applied Electromagnetic 7Ed, (Ulaby & Ravaioli)" $EBOLD

$PAR
The following figure demonstrates the spatial variation of vector field \(E=\hat{\textbf{r}} r\).$BR
\{image("ECE303_Ulaby_Ed7_3_20_P1.png",height=>430, width=>400)\} $BR

$PAR
Following the same convention, determine values of the vector field (the vector values of the arrows in vector field plot) for \( \hat{\textbf{r}} sin \phi \) at the following four points (Note: your answers will be validated to \(\pm 0.01\) absolute): $BR
At \($Vec1\), the vector field value is \{ans_rule(20)\}  \{ helpLink("vectors") \}  $PAR
At \($Vec2\), the vector field value is  \{ans_rule(20)\}  \{ helpLink("vectors") \}  $PAR
At \($Vec3\), the vector field value is  \{ans_rule(20)\}  \{ helpLink("vectors") \}  $PAR
At \($Vec4\), the vector field value is  \{ans_rule(20)\}  \{ helpLink("vectors") \}  $BR
Note: Your answers should be enclosed in  \(\langle x,y \rangle \). $PAR



\{ $mc->print_q() \} $BR
\{ $mc->print_a() \} $BR
$PAR

END_TEXT
Context()->normalStrings;
ANS($Veca1->cmp());

ANS($Veca2->cmp());

ANS($Veca3->cmp());

ANS($Veca4->cmp());

ANS(radio_cmp($mc->correct_ans));

