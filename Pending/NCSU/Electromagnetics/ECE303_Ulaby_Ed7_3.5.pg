DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",

"parserFunction.pl",
"answerHints.pl",
"PGcourse.pl",
"parserVectorUtils.pl",

);

 TEXT(beginproblem());

Context("Vector");
Context()->flags->set(
tolerance => 0.01,
tolType => "absolute",
ijk=>1,
);


Context()->variables->remove('x','y','z');
Context()->constants->add(
  x => {value => i, TeX => '\bf{\hat x}', perl => 'i'},
  y => {value => j, TeX => '\bf{\hat y}', perl => 'j'},
  z => {value => k, TeX => '\bf{\hat z}', perl => 'k'},
);
Context()->constants->set(
  i => {string => 'x', TeX => '\bf{\hat x}'},
  j => {string => 'y', TeX => '\bf{\hat y}'},
  k => {string => 'z', TeX => '\bf{\hat z}'},
);






$Ax=non_zero_random(-5,5,1);
$Ay=random(-5,5,1);
$Az=random(-5,5,1);

$Bx=random(-5,5,1);
$By=non_zero_random(-5,5,1);
$Bz=random(-5,5,1);

$Cx=random(-5,5,1);
$Cy=random(-5,5,1);
$Cz=non_zero_random(-5,5,1);






#Solution check
#$Ax=1; $Ay=2;$Az=-3;$Bx=2;$By=-4;$Bz=0;$Cx=0;$Cy=2;$Cz=-4;
#end solution check

$Av= Vector($Ax,$Ay,$Az);
$Bv= Vector($Bx,$By,$Bz);
$Cv= Vector($Cx,$Cy,$Cz);



$normAv=norm($Av);
$unitAv=unit($Av);

$normBv=norm($Bv);
$normCv=norm($Cv);
$Bc=$Bv . $Cv/$normCv;

$AngAC=acos($Av . $Cv/$normAv/$normCv)/pi*180;

$Acc=$Av x $Cv;


$Abc=$Av. ($Bv x $Cv);



$Acbc=$Av x ($Bv x $Cv);


$Axb= Vector(1,0,0) x $Bv;



$Ayz=($Av x Vector(0,1,0)) . Vector(0,0,1);






Context()->texStrings;
BEGIN_TEXT
$BBOLD This problem is related to Problem 3.5 in the "The Fundamentals of Applied Electromagnetic 7Ed, (Ulaby & Ravaioli)" $EBOLD

$PAR
Given
\(\bf{A}=$Av \),
\(\bf{B}=$Bv \),
\(\bf{C}=$Cv \). $BR
Evaluate each of the following vector manipulations following the right hand convention.
$BR
NOTE: You may use "x","y" and "z" to represent \( \bf{\hat x}, \bf{\hat y}\) and \(\bf{\hat z}\) respectively in your answer. Your answers will be validated to \(\pm 0.01\) absolute.$PAR

$BBOLD  a) $EBOLD   $BR
\(|\bf{A}|\)=\{ans_rule(10)\}  \{ helpLink("numbers") \} $BR
\( \bf{\hat a} \)=\{ans_rule(20)\} (The unit vector in \(\bf{A}\) direction) \{ helpLink("vectors") \}$PAR

$BBOLD  b) $EBOLD  $BR
The component of \(\bf{B} \) in \(\bf{C}\) is \{ans_rule(10)\}  \{ helpLink("numbers") \}$PAR

$BBOLD  c) $EBOLD  $BR
 \( \theta_{AC}\)=\{ans_rule(6)\} \(^{\circ} \) \{ helpLink("numbers") \}$PAR

$BBOLD  d) $EBOLD  $BR
\( \bf{A} \times \bf{C}\)=\{ans_rule(20)\}  \{ helpLink("vectors") \}$PAR

$BBOLD  e) $EBOLD  $BR
\(\bf{A} \cdot (\bf{B} \times \bf{C})\)=\{ans_rule(10)\}  \{ helpLink("numbers") \} $PAR

$BBOLD  f) $EBOLD  $BR
\(\bf{A} \times (\bf{B} \times \bf{C})\)=\{ans_rule(20)\}  \{ helpLink("vectors") \}$PAR

$BBOLD  g) $EBOLD  $BR
\(\bf{\hat x} \times \bf{B}\)=\{ans_rule(20)\}  \{ helpLink("vectors") \}$PAR

$BBOLD  h) $EBOLD  $BR
\((\bf{A} \times \bf{\hat y}) \cdot \bf{\hat z}\)=\{ans_rule(20)\}  \{helpLink("numbers") \}$PAR


END_TEXT
Context()->normalStrings;

ANS( $normAv->cmp() );
ANS( $unitAv->cmp() );
ANS( $Bc->cmp() );
ANS( $AngAC->cmp() );
ANS( $Acc->cmp() );
ANS( $Abc->cmp() );
ANS( $Acbc->cmp() );
ANS( $Axb->cmp() );
ANS( $Ayz->cmp() );
