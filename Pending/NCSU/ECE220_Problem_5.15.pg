## EditionText1('3')
## Problem1('5.23')
## Keywords('linear algebra','matrices')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",

  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

foreach $i (0..3) {
	foreach $j (0..3) {
		$a[$i][$j]=0;
	}
}

foreach $i (0..3) {
	$a[$i][$i]=non_zero_random(-5,5,1);
}

$a[0][1] = non_zero_random(-5,5,1);
$a[0][2] = random(-9,9,1);
$a[0][3] = random(-9,9,1);
$a[1][2] = non_zero_random(-5,5,1);
$a[1][3] = random(-9,9,1);
$a[2][3] = non_zero_random(-5,5,1);

$Am = Matrix(@a);

$det = $a[0][0]*$a[1][1]*$a[2][2]*$a[3][3];

foreach $i (0..3) {
        foreach $j (0..3) {
                $b[$i][$j]=0;
        }
}

$b[0][0] = $a[1][1]*$a[2][2]*$a[3][3]/$det;
$b[0][1] = -$a[0][1]*$a[2][2]*$a[3][3]/$det;
$b[1][1] = $a[0][0]*$a[2][2]*$a[3][3]/$det;
$b[0][2] = ($a[0][1]*$a[1][2]*$a[3][3]-$a[1][1]*$a[0][2]*$a[3][3])/$det;
$b[1][2] = -$a[0][0]*$a[1][2]*$a[3][3]/$det;
$b[2][2] = $a[0][0]*$a[1][1]*$a[3][3]/$det;
$b[0][3] = (-$a[0][1]*$a[1][2]*$a[2][3]+$a[1][1]*$a[0][2]*$a[2][3]+$a[0][1]*$a[2][2]*$a[1][3]-$a[1][1]*$a[2][2]*$a[0][3])/$det;
$b[1][3] = ($a[0][0]*$a[1][2]*$a[2][3]-$a[0][0]*$a[2][2]*$a[1][3])/$det;
$b[2][3] = -$a[0][0]*$a[1][1]*$a[2][3]/$det;
$b[3][3] = $a[0][0]*$a[1][1]*$a[2][2]/$det;

Context()->texStrings;
BEGIN_TEXT
This problem is related to Problem 5.23 in the text.
$PAR
This is a practice problem. You are not required to work it

$PAR
If \{ mbox([ '\(A=\)', display_matrix([[$a[0][0], $a[0][1], $a[0][2], $a[0][3]],
				    [$a[1][0], $a[1][1], $a[1][2], $a[1][3]],
				    [$a[2][0], $a[2][1], $a[2][2], $a[2][3]],
				    [$a[3][0], $a[3][1], $a[3][2], $a[3][3]]]) ]) \} $BR
If \( {\bf A} = $Am \)  $BR
Then \{ mbox([ '\(A^{-1}=\)', answer_matrix(4,4,5) ]) \}

END_TEXT

ANS(num_cmp($b[0][0]));
ANS(num_cmp($b[0][1]));
ANS(num_cmp($b[0][2]));
ANS(num_cmp($b[0][3]));
ANS(num_cmp($b[1][0]));
ANS(num_cmp($b[1][1]));
ANS(num_cmp($b[1][2]));
ANS(num_cmp($b[1][3]));
ANS(num_cmp($b[2][0]));
ANS(num_cmp($b[2][1]));
ANS(num_cmp($b[2][2]));
ANS(num_cmp($b[2][3]));
ANS(num_cmp($b[3][0]));
ANS(num_cmp($b[3][1]));
ANS(num_cmp($b[3][2]));
ANS(num_cmp($b[3][3]));


ENDDOCUMENT();       # This should be the last executable line in the problem.
