## Problem1('6.24', '6.27')
## Keywords('Linear systems')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGnumericalmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$x1 = random(-5,5,1);
$x2 = non_zero_random(-5,5,1);
$x3 = non_zero_random(-9,9,1);
$x4 = random(-5,5,1);

$a11 = 1;
$a12 = 0;
$a13 = random(2,4,1);
$a14 = random(2,4,1);

$b1 = $a11*$x1 + $a12*$x2 + $a13*$x3 + $a14*$x4;

$a21 = 0; 
$a22 = 1;
$a23 = random(-4,-2,1);
$a24 = random(-4,-2,1);

$b2 = $a21*$x1 + $a22*$x2 + $a23*$x3 + $a24*$x4;

$k = non_zero_random(2,3,1);
$l = non_zero_random(-3,-2,1);
$a31 = $k*$a11 + $l*$a21;
$a32 = $k*$a12 + $l*$a22;
$a33 = $k*$a13 + $l*$a23 + non_zero_random(-4,4,1);
if ($a33 == 0) { $a33 = $k*$a13 + $l*$a23 + 5;}
$a34 = $k*$a14 + $l*$a24;

$b3 = $a31*$x1 + $a32*$x2 + $a33*$x3 + $a34*$x4;

$a41 = - $a21;
$a42 = - $a22;
$a43 = - $a23;
$a44 = - $a24 + random(4,6,1);

$b4 = $a41*$x1 + $a42*$x2 + $a43*$x3 + $a44*$x4;

$NO_SPACE = '@{}';

BEGIN_TEXT
This problem is related to Problems 6.24 and 6.27 in the text.
$PAR
Solve the system using Gaussian elimination:

\[ \left\{ "\{"; \}
\begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
               x_1 &           & +$a13 x_3 & + $a14 x_4 & = & $b1 \cr
                   &       x_2 & +$a23 x_3 & + $a24 x_4 & = & $b2 \cr
          $a31 x_1 & +$a32 x_2 & +$a33 x_3 & + $a34 x_4 & = & $b3 \cr
                   &     - x_2 & +$a43 x_3 & + $a44 x_4 & = & $b4  
\end{array}\right. \]
\(x_1 = \) \{ans_rule(5)\}$BR
\(x_2 = \) \{ans_rule(5)\}$BR
\(x_3 = \) \{ans_rule(5)\}$BR
\(x_4 = \) \{ans_rule(5)\}$BR

END_TEXT

ANS(num_cmp($x1));
ANS(num_cmp($x2));
ANS(num_cmp($x3));
ANS(num_cmp($x4));

ENDDOCUMENT();       # This should be the last executable line in the problem.
