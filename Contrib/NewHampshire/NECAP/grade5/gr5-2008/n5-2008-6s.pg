DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

# make sure we're in the context we want
Context("Numeric");


# now initialize the graph
$graph = init_graph(-.5,-.5, 3.9,3.9);
$graph->moveTo(0,0);
$graph->lineTo(3 ,0 ,'black');
$graph->lineTo(0 ,3 ,'black');
$graph->lineTo(0 ,0 ,'black');
$graph->lineTo(.6 ,.8 ,'black');
$graph->lineTo(3.6 ,.8 ,'black');
$graph->lineTo(.6 ,3.8 ,'black');
$graph->lineTo(.6 ,.8 ,'black');
$graph->moveTo(3.6,.8);
$graph->lineTo(3 ,0 ,'black');
$graph->moveTo(.6,3.8);
$graph->lineTo(0 ,3 ,'black');


#NOTE  Actual size of box is in the image below
TEXT(beginproblem());
$radio=new_multiple_choice();
$radio->qa("How many rectangular faces does the prism have? ", "3 ");
#FIRST PAREN IS QUESTION, SECOND PAREN IS CORRECT ANSWER
$radio->extra("2 ", "5 ", " 6 ");
BEGIN_TEXT
Look ath this prism
$BR
\{ image( insertGraph($graph), tex_size=>100,
    height=>200, width=>200
    ) \}
$PAR
\{$radio->print_q()\}
\{$radio->print_a()\}

END_TEXT
ANS(radio_cmp($radio->correct_ans()));
BEGIN_SOLUTION
$PAR Solution $PAR
Notice that there are 5 faces, 2 of them are triangles and the other 3 are rectangles.
END_SOLUTION

COMMENT('MathObject version');
ENDDOCUMENT();


