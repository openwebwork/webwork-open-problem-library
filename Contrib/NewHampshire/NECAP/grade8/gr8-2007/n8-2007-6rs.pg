DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
#for currency use Context("Currency") then Currency($A);
#Then, in the text use $DOLLAR $a
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Fraction")->flags->set(
  allowProperFractions =>1,
  reduceConstants => 0, #keep fractions ad operations between them
);
$a=random(3,4,1);
$am=$a-1;
$x=6*$a;
$s=6*($a-1);
$a1=$s-1;
$ans=Formula("$a1 1/2")->string ;
$bad2=2*$a;
$b1=$a*$x/$am-1;
$bad3=Formula ("$b1 1/2")->string;
$radio=new_multiple_choice();
$radio->qa("What is the value of \(\frac{$am}{$a} x-\frac{1}{2}   \) when \(x=$x  \) ", "$ans ");
#FIRST PAREN IS QUESTION, SECOND PAREN IS CORRECT ANSWER
$radio->extra("$a ", "$bad2 ", "$bad3  ");

BEGIN_TEXT
IF YOU ARE PRACTICING FOR THE NECAP EXAMINATION, DO THIS WITHOUT A CALCULATOR.
THIS IS A PROBLEM FOR WHICH A CALCULATOR WOULD NOT BE ALLOWED.$PAR

\{$radio->print_q()\}
\{$radio->print_a()\}


END_TEXT
ANS(radio_cmp($radio->correct_ans()));
BEGIN_SOLUTION
$PAR Solution $PAR
\(\frac{$am}{$a}\times $x=$s\).  Subtracting \(\frac{1}{2}\) gives us $ans.
END_SOLUTION

COMMENT('MathObject version');
ENDDOCUMENT();


