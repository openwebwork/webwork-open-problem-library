#######################
## Initialization

DOCUMENT();
loadMacros(
	"PGstandard.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserOneOf.pl",
	);

TEXT(&beginproblem);

Context("Numeric");
Context()->variables->add(n => ['Real', limits => [1,5,1]]);

###################################
# Setup

$a=random(7,15,1);
$b=$a-random(2,5,1);
$c=random(1,10,1);
$d=random(1,10,1);

$series="\sum_{n=1}^\infty  \frac{$a^n}{(n+$d)^2\cdot $b^{n+$c}}";

$ratiotest="Ratio Test";
$roottest="Root Test";

$test = PopUp(["Select", $ratiotest, $roottest], $ratiotest);
$limtest = PopUp(["Select", "finite", "greater than 1", "equal to 1", "less than 1","greater than 0", "equal to 0"], "greater than 1");
$convans = PopUp(["Select", "the series diverges", "the series converges conditionally", "the series converges absolutely", "we know nothing"], "the series diverges");

###########################################
# Problem Statement
BEGIN_TEXT
Test the series for convergence or divergence.
\[ $series .\]

$PAR
Use the \{ $test->menu\} and evaluate:$PAR
\(\displaystyle \lim_{n \to \infty}\) \{ans_rule(50)\} \(= \) \{ans_rule(20)\}. (Note: Use INF for an infinite limit.)

$PAR
Since the limit is \{ $limtest->menu\}, \{$convans->menu\}. $BR

END_TEXT

### Answer evaluation

$ratio=Compute("(($a**(n+1)/((n+1+$d)**2*$b**(n+1+$c))))/(($a**n)/((n+$d)**2*$b**(n+$c)))");
$root=Compute("(($a**n)/((n+$d)**2*$b**(n+$c)))**(1/n)");
$notest=OneOf($ratio, $root);
$limans=$a/$b;

Context($test->context);
ANS(OneOf($ratiotest,$roottest)->cmp);

### Allows either test to be used. 
### If no test selected, the PopUp is marked incorrect, 
### but either ratio or root answer for the limit is accepted as correct.

$ans_hash1 =$inputs_ref->{ANS_NUM_TO_NAME(1)};
if ($ans_hash1 eq $ratiotest) {ANS( $ratio->cmp())}
elsif ($ans_hash1 eq $roottest) {ANS( $root->cmp())}
else {ANS($notest->cmp())}
ANS(num_cmp($limans, strings=>["INF"]));
ANS($limtest->cmp);
ANS($convans->cmp);

######################################

ENDDOCUMENT();