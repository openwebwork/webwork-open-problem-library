#######################
## Initialization

DOCUMENT();
loadMacros(
	"extraAnswerEvaluators.pl",
	"PGbasicmacros.pl",
	"PGanswermacros.pl",
	"PGauxiliaryFunctions.pl"
	);


###################################
# Setup

$c = (-1)**random(1,2,1);
$absa = random(3,9,1);
$a=$c*$absa;

if ($c == -1)
           {
           $exp="($a)";
           }
else
           {
           $exp="$a";
           };

###################################
# Main text

TEXT(beginproblem());
BEGIN_TEXT
$BR
(a) Find  all the values of \(x\) for which the series converges. 

$BR

 \[  \sum_{n=1}^\infty $exp^n x^n\]


\{ans_rule(20)\} $BR

$BBOLD Note: $EBOLD Give your answer in \{helpLink('interval notation')\}. $PAR $BR

(b) Find the sum of the series for those values of \(x\). $BR

\{ans_rule(40)\} $BR

$BBOLD Note: $EBOLD Your answer will be a function of \(x\).

END_TEXT

###################################
## Answer evaluation

$showPartialCorrectAnswers = 1;

$ansl = "-1/$absa";
$ansr = "1/$absa";
$ans="$a*x/(1-$a*x)";
ANS(interval_cmp("($ansl,$ansr)"));
ANS(fun_cmp($ans)); 

ENDDOCUMENT();