DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   #"PGcourse.pl",      # Customization file for the course
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

$text = "itwasadarkandstormynight";
@keys = ( "schulz", "snoopy", "charlie");
$key = @keys[random(0,2,1)];
$encrypted = "";
for ($i = 0; $i < length($text); ++$i) {
  $c = substr($text, $i, 1);
  $d = substr($key, $i % length($key), 1);
  $encrypted .= chr((ord($c) + ord($d) - 2*ord('a')) % 26 + ord('a'));
}

Context()->strings->add($text=>{});
##############################################################
#
#  Text
#
#

BEGIN_TEXT


Decrypt the text below, which was encrypted using a Vigen&egrave;re cipher with the key <span style="color:blue;font-weight:bold;">$key</span>.
<center><span style="color:red;font-weight:bold;">$encrypted</span></center>
\{ ans_rule(30) \}
END_TEXT

##############################################################
#
#  Answers
#
#

ANS( Compute($text)->cmp() );

ENDDOCUMENT();        

