###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserPopUp.pl",
);

TEXT(beginproblem());


###########################
#  Setup

$a = random(0,8);

$b = non_zero_random(-3,3);
$c = non_zero_random(2,4);
$c2 = non_zero_random(2,4);
$c3 = non_zero_random(2,4);
$d = non_zero_random(-3,3);
$e = non_zero_random(-3,3);


Context("Numeric");
Context()->variables->add(y => 'Real');
$f1 = Formula("$b*x**2 + $d*x") -> reduce;

@functions= ( "\( f(x) =  $c (x+1)^3 (x+$b) \) " , "\( f(x) =  $c (x+1)^3 (x+$b) \)", "\( f(x) =  $c2 x+5 \)" , "\( f(x) =  $c (x^3)^{$c2}\)", "\( f(x) =  $c2 (x^{$c})^{$c3} \)", "\( f(x) =  $c3 (x^{$c2})^{$c}\)" , "\( \displaystyle f(x) = \frac{1}{x-$c} \)", "\( \displaystyle f(x) = \frac{$c x}{x^{$a+1}+1} \)", "\( \displaystyle f(x) = \frac{x+3}{x+$c} \)");


if (0 <= $a and $a <= 2) {
     $ans = "polynomial function";
}
elsif(3 <= $a and $a <= 5){
     $ans = "power function and polynomial function"
}

elsif(6 <= $a and $a <= 8){
     $ans = "neither"
}


Context("Numeric");
$popup = PopUp(
  ["?","polynomial function","power function","power function and polynomial function","neither"],
  "$ans",
);

###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
 Is $functions[$a] a polynomial function, power function, both power function and polynomial function, or neither?
\{ $popup->menu() \}
END_TEXT
Context()->normalStrings;


############################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( $popup->cmp() );


