###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
"contextFraction.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################

Context("Numeric");

#  Setup parameters
$u=random(2,6);
$v=random(2,3);

# points
$x1 = - int($u/2);
$x2 = - $x1 + 1;
$y1 = int($u/2 + $v);
$y2 =  - $y1 + 1;

# solution
$ans = (2 * $y1 - 1) / (2 * $x1 - 1);

###########################
#  Main text

BEGIN_PGML
Find the slope of the line between the points  [` \left( {[$x1]}, {[$y1]} \right) `] and
[` \left( {[$x2]}, {[$y2]} \right) `].  

 [_______________]{$ans} [@ AnswerFormatHelp("numbers") @]*

END_PGML


