##############################################
#  Setup
Context("Interval");

$a = random(-3,3,1);
$c = random(1,3,1);
$d = random(1,3,1);
$e = random(1,3,1);
$f = random(3,10,1);

Context("PiecewiseFunction");
Context()->noreduce("(-x)-y");

$fun = PiecewiseFunction("$c*x+$d if x < 1 else -$e*x+$f if x >= 1")->reduce;      

$domain = Interval("(-infinity,infinity)");

if ($d+$c > $f-$e) {
    $range = Interval("(-infinity, $d+$c)");
} else { 
    $range = Interval("(-infinity, $f-$e]");
}

Context("Interval");

$video = MODES(
