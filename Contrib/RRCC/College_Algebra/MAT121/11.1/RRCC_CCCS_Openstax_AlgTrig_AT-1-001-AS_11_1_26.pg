###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("LimitedPoint");


$b = non_zero_random(-2,2,1);
$mult1 = non_zero_random(1,5,1);
$c = $b*$mult1;
$mult2 = non_zero_random(1,5,1);
$a = $b*$mult2;
$d = non_zero_random(-5,-2,1);
$dc = $d*$c;

Context()->variables->add(y => 'Real');
Context()->noreduce('(-x)-y','(-x)+y');
$f = Formula("$a*x+$b*y")->reduce;
$g = Formula("$d*$a*x+$d*$b*y")->reduce;
$h = Formula("-$a/$b*x+$c/$b")->reduce;

$ans = List( Point("(x,$h)"));

###########################
#  Main text

BEGIN_PGML
Solve the system  
>>[` [$f]  = [$c]  `]<<  
>>[` [$g] = [$dc] `]<<

Solution: [_______________]{$ans} [@ AnswerFormatHelp("points") @]*  

If there is one solution, enter the solution as an ordered pair, [` (a,b) `],
including the parentheses. If there are no solutions, enter NONE. If there are infinitely many solutions, enter solutions as [`(x,f(x))`] where [`y=f(x)`].

END_PGML


