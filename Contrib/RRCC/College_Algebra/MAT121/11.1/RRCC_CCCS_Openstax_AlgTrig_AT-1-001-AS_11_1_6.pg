"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###########################
#  Setup

Context("Numeric");

$popup1 = PopUp(
  ["?","Yes","No"],
  "No",
);

$popup2 = PopUp(
  ["?","Yes","No"],
  "Yes",
);

$popup3 = PopUp(
  ["?","Yes","No"],
  "No",
);

###########################
#  Main text

BEGIN_PGML
For the following, determine whether the given ordered pair is a solution to the system of equations or not.

+ [`5x-y=4`]  
[`x+6y=2`]  
Ordered pair: [`(4,0)`]  
[@ $popup1->menu() @]*


+ [`x-y=3`]  
[`3x+y=5`]  
Ordered pair: [`(2,-1)`]  
[@ $popup2->menu() @]*


+ [`2x+4y=0`]  
[`3-5y=9`]  
Ordered pair: [`(-4,2)`]  
[@ $popup3->menu() @]*


END_PGML


############################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS( $popup1->cmp() );
ANS( $popup2->cmp() );
ANS( $popup3->cmp() );

