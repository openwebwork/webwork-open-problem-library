###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGchoicemacros.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


###########################
#  Setup

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"", 
"\( f^{-1}(x) \)$BR",                
);
$mc -> extra(
"\( f(x) \)$BR",
"\( y \)$BR",
"\( x \)$BR",
);
$mc -> makeLast("None of the above");

Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');

$a = non_zero_random(-9,9,1);
do { $b = non_zero_random(-9,9,1); } until ( $b != $a );

$f=Formula("$a*x+$b")->reduce();;

$ans1 = Formula("(x-$b)/$a")->reduce();


###########################
#  Main text

BEGIN_PGML
Let [`f(x) = [$f]`]. Find and enter the inverse of [`f(x)`]

[_______________]{$ans1} [@ AnswerFormatHelp("formulas") @]*

Select the correct notation for the inverse of [`f(x)`].
END_PGML

BEGIN_TEXT
\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}
$BR
END_TEXT

#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );

