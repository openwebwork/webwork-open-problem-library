# coeficientes ecuaciÃ³n de tipo a1/(b1x) + a2/(b2x) = a3/(b3x)
$a1 = non_zero_random(-9,9);
$b1 = non_zero_random(-9,9);

$a2 = non_zero_random(-9,9);
$b2 = non_zero_random(-9,9);

$a3 = non_zero_random(-9,9);
$b3 = non_zero_random(-9,9);

Context("Vector")->variables->are(x=>'Real',y=>'Real');
$f = SolutionFor("x^2 = cos(y)","(1,0)");

TEXT(beginproblem());

Context()->texStrings;
BEGIN_TEXT
$PAR
