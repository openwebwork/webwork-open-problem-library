## DBsubject(Prebasica)
## DBchapter(Expresiones algebraicas)
## DBsection(Propiedades de los exponentes)
## Level(1)
## KEYWORDS('exponentes','enteros','propiedades')
## Author(Edwin Florez)
## Institution(UPRM)
## Language(es)

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGgraphmacros.pl",
"contextInequalities.pl",
"AnswerFormatHelp.pl",
"PGchoicemacros.pl",
"contextFraction.pl",
"problemRandomize.pl",
"PGpolynomialmacros.pl"
);

TEXT(beginproblem());
#$refreshCachedImages = 1;

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
#$showPartialCorrectAnswers = 0;

##############################################################
#  Setup

#Si se aplica el método reduce() al Contexto Formula, no usa estas reglas al 
#aplicar las técnicas de reducción a expresiones.
#Context()->noreduce('(-x)-y','(-x)+y');

@vars = ("m","n","p","q","r","y","z","k","a","b");
$index = random(0,9);
Context()->variables->add($vars[$index] => 'Real');
$n = random(-20,20);
$m = non_zero_random(-15,15);

$exp = Compute("($vars[$index]^$n)($vars[$index]^$m)");

$answer = Compute("$vars[$index]^($n+$m)")->reduce; 

##############################################################
#
#  Text
#

Context()->texStrings;
BEGIN_TEXT
Escriba la siguiente expresión como una sola potencia:
\[
$exp
\]
Contestación: \{ans_rule(20)\} \{ AnswerFormatHelp("formula") \}
END_TEXT
Context()->normalStrings;

#Context("Numeric");
##############################################################
#  Answers
#

ANS( $answer->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$BBOLD Paso 1:$EBOLD Utilizando la propiedad \( a^nb^m = a^{n+m} \), se obtiene
\[
$exp = $vars[$index]^{$n+$m} = $answer,
\]
por lo tanto la respuesta es: \($answer\).
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();