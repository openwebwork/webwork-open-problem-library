ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
#$showPartialCorrectAnswers = 0;

##############################################################
#  Setup

Context("Numeric");

$a = random(2,30);

$da = 2*$a;
$asd = $a/2;

$a_rectangulo = $da*$a;
$a_circulo = pi*($asd)**2;

$asdc = $asd**2;
$dasdc = 2*$asdc;


$answer = Compute($a_rectangulo - 2*$a_circulo);

##############################################################
#
#  Text
#

Context()->texStrings;
BEGIN_TEXT
$BCENTER
