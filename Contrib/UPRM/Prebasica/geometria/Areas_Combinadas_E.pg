#$showPartialCorrectAnswers = 0;

##############################################################
#  Setup

Context("Numeric");

$r = random(2,20);

$dr = 2*$r;
$rc = $r**2;

$l = $dr/sqrt(2);

$a_circulo = pi*$r**2;
$a_cuadrado = $l**2;

$answer = Compute($a_circulo - $a_cuadrado);

##############################################################
#
#  Text
#

Context()->texStrings;
BEGIN_TEXT
$BCENTER
