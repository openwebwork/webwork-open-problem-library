$Not1 = PopUp(["?", "True", "False"], "False");
$Premise =  PopUp(["?", "a", "b", "c", "d", "e", "f", "g", "h", "i", "j", "k", "l"], "f");
$Not2 = PopUp(["?", "True", "False"], "False");
$Conclusion=  PopUp(["?", "a", "b", "c", "d", "e", "f", "g", "h", "i", "j", "k", "l"], "e");




##############################################################
