Context("Numeric");
#given
$A = random(2, 10, 1);
$B = random(2, 10, 1);
$C = random(10, 15, 1);
$D = random(10, 15, 1);
$E = random(10, 15, 1);

#computation
$angle = $E* pi/180;
$va = sqrt($B*$E);
$vay = -sin($angle)*$va;
$vax = cos($angle)*$va;
$vabx = $vax - $D;

#image resolution
$resolution = 0.2;
$width = $resolution*1677;
$height = $resolution*1315;

#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

