##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$X = random(6,10,1);
$Y = random(6,10,1);
$W = random(100,600,25);

#computation for numerical answer
$F = sprintf("%0.1f",$W * 9.81/8*sqrt(($X/2)**2+$Y**2)/$Y);
$l = $X/(1+2*sin(pi/4));
$P = sqrt(($X/2)**2+($l/2)**2+($Y)**2);
$Px = sprintf("%0.1f",$X/2*$F/$P);
$Py = sprintf("%0.1f",$l/2*$F/$P);
$Pz = sprintf("%0.1f",-$Y*$F/$P);
$i1 = $Px; $j1 = $Py; $k1 = $Pz;
$i2 = $Py; $j2 = $Px; $k2 = $Pz;
$i3 = -$Py; $j3 = $Px; $k3 = $Pz;
$i4 = -$Px; $j4 = $Py; $k4 = $Pz;
$i5 = -$Px; $j5 = -$Py; $k5 = $Pz;
$i6 = -$Py; $j6 = -$Px; $k6 = $Pz;
$i7 = $Py; $j7 = -$Px; $k7 = $Pz;
$i8 = $Px; $j8 = -$Py; $k8 = $Pz;

#image settings
$resolution = 0.2;
$width = $resolution*1552;
$height = $resolution*2910;

#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

