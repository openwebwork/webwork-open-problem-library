#
#Setup

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.2;

$height = $imgScale * 2452;

$width = $imgScale * 3279;

#---- Random variables for this problem --------#
$F_B = random(800, 900, 20);
$F_C = random(600, 700, 20);
$h = random(4, 5, 1);
$B_x = random(2, 3, 1);
$B_y = random(6, 7, 1);
$C_x = random(1.5, 3, 0.5);
$C_y = random(1, 2, 1);

#---- Formulas to compute answers --------------#
$AB = ($B_x ** 2 + $B_y ** 2 + $h ** 2) ** 0.5;
$AC = ($C_x ** 2 + $C_y ** 2 + $h ** 2) ** 0.5;
$F_Bx = $F_B / $AB * $B_y;
$F_By = - $F_B / $AB * $B_x;
$F_Bz = - $F_B / $AB * $h;
$F_Cx = - $F_C / $AC * $C_y;
$F_Cy = $F_C / $AC * $C_x;
$F_Cz = - $F_C / $AC * $h;

$F_Rx = $F_Bx + $F_Cx;
$F_Ry = $F_By + $F_Cy;
$F_Rz = $F_Bz + $F_Cz;
$F_R = ($F_Rx ** 2 + $F_Ry ** 2 + $F_Rz ** 2) ** 0.5;

$alpha = acos($F_Rx / $F_R) * 180 / pi;
$beta = acos($F_Ry / $F_R) * 180 / pi;
$gamma = acos($F_Rz / $F_R) * 180 / pi;

