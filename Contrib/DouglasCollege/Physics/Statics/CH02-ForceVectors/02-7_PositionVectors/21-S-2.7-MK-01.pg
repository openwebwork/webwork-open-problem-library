#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1003;
$height = $imgScale*1056;


#---- Provided --------#
# random(lower, upper, stepsize)

$m = random(10,20,1);
$g = 9.81;
$h= random(2,5,1);

$Ax = 0;
$Ay = 0;
$Az = $h;

$Bx = 3;
$By = 4;
$Bz = 4;

$Cx = -6;
$Cy = -3;
$Cz = 6;

$Dx = 4;
$Dy = -3;
$Dz = 4;

#---- Formulas to compute answers --------------#

$A = Vector($Ax, $Ay, $Az);
$B = Vector($Bx, $By, $Bz);
$C = Vector($Cx, $Cy, $Cz);
$D = Vector($Dx, $Dy, $Dz);

$AB = $B-$A;
$AC = $C-$A;
$AD = $D-$A;

$ABmag = norm($AB);
$ACmag = norm($AC);
$ADmag = norm($AD);

$ABx = $Bx - $Ax;
$ABy = $By - $Ay;
$ABz = $Bz - $Az;

$ACx = $Cx - $Ax;
$ACy = $Cy - $Ay;
$ACz = $Cz - $Az;

$ADx = $Dx - $Ax;
$ADy = $Dy - $Ay;
$ADz = $Dz - $Az;

$uABx = $ABx / $ABmag;
$uABy = $ABy / $ABmag;
$uABz = $ABz / $ABmag;

$uACx = $ACx / $ACmag;
$uACy = $ACy / $ACmag;
$uACz = $ACz / $ACmag;

$uADx = $ADx / $ADmag;
$uADy = $ADy / $ADmag;
$uADz = $ADz / $ADmag;



