##############################################################
#
#Setup

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.18;

$height = $imgScale * 2729;

$width = $imgScale * 3809;

#---- Random variables for this problem --------#
$L = random(9, 10, 0.5);
$h_A = random(2, 3, 0.5);
$h_B = $h_A + random(0.5, 1, 0.5);
$h_C = $h_A + random(0.5, 1, 0.5);
$h_P = random(6, 7, 0.5);
$d_Ax = random(3, 4, 0.5);
$d_Bx = random(5, 6, 0.5);
$d_Cx = random(7, 8, 0.5);
$d_By = random(1, 2, 0.5);
$d_Cy = random(5, 6, 0.5);

#---- Formulas to compute answers --------------#
$d_Py = (($L ** 2) - ($h_P ** 2)) ** 0.5;

$r_PAx = - $d_Ax;
$r_PAy = $d_Py;
$r_PAz = $h_A - $h_P;
$r_PBx = $d_Bx;
$r_PBy = $d_Py - $d_By;
$r_PBz = $h_B - $h_P;
$r_PCx = $d_Cx;
$r_PCy = $d_Py + $d_Cy;
$r_PCz = $h_C - $h_P;

$d_PA = ($r_PAx ** 2 + $r_PAy ** 2 + $r_PAz ** 2) ** 0.5;
$d_PB = ($r_PBx ** 2 + $r_PBy ** 2 + $r_PBz ** 2) ** 0.5;
$d_PC = ($r_PCx ** 2 + $r_PCy ** 2 + $r_PCz ** 2) ** 0.5;

