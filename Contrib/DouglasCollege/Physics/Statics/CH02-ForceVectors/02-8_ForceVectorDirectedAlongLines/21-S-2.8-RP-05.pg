#Setup

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.14;

$height = $imgScale * 3618;

$width = $imgScale * 3548;

#---- Random variables for this problem --------#
$d_1 = random(3, 5, 1);
$d_2 = random(2, 4, 1);
$d_3 = $d_2 + 1;
$d_4 = random(3, 5, 1);
$d_5 = random(3, 5, 1);
$d_6 = random(2, 4, 1);
$d_7 = random(5, 7, 1);
$d_8 = random(2, 4, 1);
$d_9 = random(4, 6, 1);
$h = 2;
$F_AD = random(600, 900, 50);

#---- Formulas to compute answers --------------#
$AB_x = $d_6;
$AB_y = $d_3;
$AB_z = $d_5 - $h;
$AC_x = - $d_7;
$AC_y = - $d_8;
$AC_z = $d_9 - $h;
$AD_x = $d_4;
$AD_y = - $d_2;
$AD_z = $d_1 - $h;

$AB = ($AB_x ** 2 + $AB_y ** 2 + $AB_z ** 2) ** 0.5;
$AC = ($AC_x ** 2 + $AC_y ** 2 + $AC_z ** 2) ** 0.5;
$AD = ($AD_x ** 2 + $AD_y ** 2 + $AD_z ** 2) ** 0.5;

$D = $F_AD / $AD;
$B = $D * ($d_2 + $d_8 * $d_4 / $d_7) / ($d_3 - $d_8 * $d_6 / $d_7);
$C = ($B * $d_6 + $D * $d_4) / $d_7;

$F_AB = $B * $AB;
$F_AC = $C * $AC;

$F_R = $B * $AB_z + $C * $AC_z + $D * $AD_z;

