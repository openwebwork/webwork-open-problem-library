#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1500;
$height = $imgScale*1056;


#---- Provided --------#
# random(lower, upper, stepsize)

$d1 = random(30,70,10);
$d2 = $d1;
$k1 = random(2,8,1);
$k2 = random(2,8,1);
$d3 = random(5,10,1);

#---- Formulas to compute answers --------------#

$z = $d1 / (2 * ($k1 / $k2) + 1); 
$x1 = $z * $d3 / ($d1 + $d2 - $z);
$x2 = ($d1 - $z) * $x1 / $z;
$F = $k1 * $x1;
 


