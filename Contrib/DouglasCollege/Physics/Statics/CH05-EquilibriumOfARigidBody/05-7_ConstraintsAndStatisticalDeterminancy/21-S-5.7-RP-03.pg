##############################################################
#
#Setup

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.2;

$height = $imgScale*2532;

$width = $imgScale*3405;
		#aspect ratio

#---- Random variables for this problem --------#
$d1 = random(0.5, 0.8, 0.1);
$d2 = $d1;
$d3 = $d1 + random(-0.1, 0.1, 0.1);
$d4 = $d3 - random(0.1, 0.2, 0.1);

$F1 = random(500, 800, 100);
$F2 = random(300, 600, 100);

#---- Formulas to compute answers --------------#
$Cy = - $F2;
$Cx = - $d3 / $d4 * $F1;
$Bz = - ($d4 * $Cy + ($d1 + $d2) * $F1) / $d1;
$Az = - $Bz - $F1;
$Bx = ($d3 * $Cy - ($d1 + $d2) * $Cx) / $d1;
$Ax = - $Bx - $Cx;

#---- Answers to the problem -----------------------#
$ansA = $Ax;
$ansB = 0;
$ansC = $Az;

$ansD = $Bx;
$ansE = 0;
$ansF = $Bz;

$ansG = $Cx;
$ansH = $Cy;
$ansI = 0;

########################################################
#PGML

BEGIN_PGML

[@ image( "21-S-5.7-RP-03.png", width=>[$width], height=>[$height]) @]*

