#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1056;
$height = $imgScale*1056;


#---- Provided --------#
# random(lower, upper, stepsize)

$d1 = random(1.5,2,0.1);
$d2 = random(1.5,2,0.1);
$theta = random(0,180,10);
$rad = $theta * pi / 180;
$F = random(50,200,25);

#-----Calculations------#

$Mx = -1*sin($rad) * $F * $d2;
$My = -1*sin($rad) * -$F * $d1;
$Mz = -1*cos($rad) * $F *$d1;

$Fx = 0;
$Fy = -1 * cos($rad) * $F;
$Fz = -1 * sin($rad) * $F;

