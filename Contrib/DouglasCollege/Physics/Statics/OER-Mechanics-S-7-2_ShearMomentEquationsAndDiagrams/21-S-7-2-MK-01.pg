#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*2200;
$height = $imgScale*1100;


#---- Provided --------#
# random(lower, upper, stepsize)
$f1 = random(5,15,5);
$d1 = random(5,7,1);
$d2 = random(5,7,1);

#---Reaction Forces---
$Ay = $f1 * $d2 / ($d1 + $d2);
$Cy = $f1 * $d1 / ($d1 + $d2);
$Vab = abs($Ay);
$Vbc = ($Ay - $f1);

if($Vab<$Vbc){
	$Vmax = $Vbc;
}else{
	$Vmax = $Vab;
}

$Mmax = $Vab * $d1;

