#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1003;
$height = $imgScale*1056;


#---- Provided --------#
# random(lower, upper, stepsize)

$m = random(10,20,1);
$g = 9.81;
$h= random(2.5,3.5,0.5);

$Ax = 0;
$Ay = 0;
$Az = $h;

$Bx = 3;
$By = 4;
$Bz = 4;

$Cx = -6;
$Cy = -3;
$Cz = 6;

$Dx = 4;
$Dy = -3;
$Dz = 4;

#---- Formulas to compute answers --------------#

$A = Vector($Ax, $Ay, $Az);
$B = Vector($Bx, $By, $Bz);
$C = Vector($Cx, $Cy, $Cz);
$D = Vector($Dx, $Dy, $Dz);

$AB = $B-$A;
$AC = $C-$A;
$AD = $D-$A;

$ABmag = norm($AB);
$ACmag = norm($AC);
$ADmag = norm($AD);

$uAB = unit($AB);
$uAC = unit($AC);
$uAD = unit($AD);

$aT = Matrix($uAB,$uAC,$uAD);
$a = $aT->transpose;

$ai = $a->inverse;
$b = Matrix([0],[0],[$m*$g]);
$x = $ai*$b;

$FAB = $x->element(1,1);
$FAC = $x->element(2,1);
$FAD = $x->element(3,1);



