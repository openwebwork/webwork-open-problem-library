#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.29;

$height = $imgScale*1748;

$width = $imgScale*2770;
		#aspect ratio

#---- Random variables for this problem --------#
$d = random(4, 6, 1);
$w_max = random(200, 350, 25);

#---- Formulas to compute answers --------------#
$C = $w_max / ($d ** 3);
$F_E = $w_max * $d / 4;
$x_E = 4 / 5 * $d;

