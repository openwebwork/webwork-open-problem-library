$height = $imgScale*1056;


#---- Provided --------#
# random(lower, upper, stepsize)



#-----Calculations------#

$fx = random(100,1000,100);
$fy = random(100,1000,100);
$fz = random(100,1000,100);
$d1 = random(0.5,1,0.1);
$d2 = random(0.2,0.5,0.1);
$d3 = random(0.5,1,0.1);
$d4 = random(0.5,1,0.05);

$fry = $fy;
$frx = -$fx;
$frz = -$fz;

#---first matrix---
$M1y = $d1 * $frx;

#---Second Matrix---
$M2x = -($d1+$d2)*$fy;

#---Third Matrix---
$M3x = $frz * $d3;;
$M3y = $frz * $d4;

$Mx = $M2x + $M3x;
$My = $M1y + $M3y;
$Mz = 0;

#---Third Matrix
