#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.24;

$height = $imgScale*2074;

$width = $imgScale*2586;
		#aspect ratio

#---- Random variables for this problem --------#
$d_1 = random(1.5, 2.5, 0.5);
$L = $d_1 + random(2.5, 3.5, 0.5);
$F_C = random(200, 300, 10);
$M_T = random(350, 500, 50);

#---- Formulas to compute answers --------------#
$F = 5 * ($M_T + $d_1 * $F_C) / (3 * $L + 4 * $d_1);

