$height = $imgScale*2187;

$width = $imgScale*2961;
		#aspect ratio

#---- Random variables for this problem --------#
$d_1 = random(0.4, 0.6, 0.1);
$d_2 = random(1.2, 1.5, 1.5);
$M_R = random(1300, 1600, 50);
$F = random(1800, 2100, 50);

#---- Formulas to compute answers --------------#
$F_1 = ($d_2 * $F - $M_R) / $d_1;
$F_2 = $F_1;

