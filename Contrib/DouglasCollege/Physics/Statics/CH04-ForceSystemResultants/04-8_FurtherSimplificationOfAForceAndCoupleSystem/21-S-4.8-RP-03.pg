tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.30;

$height = $imgScale*1685;

$width = $imgScale*3378;
		#aspect ratio

#---- Random variables for this problem --------#
$d_1 = random(3, 4, 0.5);
$F = random(300, 500, 25);
$M = random(500, 800, 100);

#---- Formulas to compute answers --------------#
$F_E = $F;
$thetaDeg = atan(4 / 3) * 180 / pi;
$x = $d_1 + (5 * $M) / (4 * $F_E);

