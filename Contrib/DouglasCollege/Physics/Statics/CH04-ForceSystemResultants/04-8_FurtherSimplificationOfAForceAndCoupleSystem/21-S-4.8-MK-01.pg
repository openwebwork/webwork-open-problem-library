#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1500;
$height = $imgScale*1100;


#---- Provided --------#
# random(lower, upper, stepsize)
$d1 = random(0.5,0.75,0.05);
$d2 = random(2,3,0.1);
$d3 = random(2.5,3.5,0.1);
$f1 = random(15,25,1);
$f2 = random(25,35,1);
$f3 = random(85,95,1);
$fa = random(35,45,1);
$fb = random(30,35,1);

#---Calculations---

$fr = -$f1 - $f2 - $f3 - $fa - $fb;

$y = (-$fb * $d1 -$f3 * $d1 - $f2 * ($d1+$d3) - $f1 * ($d1 +$d3+$d3) - $fa * ($d1 +$d3+$d3))/($fr);

$x = ($f3*$d1 + $f1*$d1 + $f2*($d1+$d2) + $fb * ($d2+$d2+$d1) + $fa * ($d2+$d2+$d1))/(-$fr);

