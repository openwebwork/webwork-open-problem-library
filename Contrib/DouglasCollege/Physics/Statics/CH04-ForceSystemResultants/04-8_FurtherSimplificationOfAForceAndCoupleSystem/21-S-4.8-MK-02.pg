#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1500;
$height = $imgScale*1100;


#---- Provided --------#
# random(lower, upper, stepsize)
$da = random(0.5,1,0.1);
$db = random(0.5,1,0.1);
$dc = random(0.5,1,0.1);
$f1 = random(250,350,10);
$f2 = random(150,250,10);
$f3 = random(100,150,10);
$m1 = random(75,125,5);
$m2 = random(150,210.10);
$deg1 = random(35,55,10);
$rad1 = $deg1*pi()/180;

#---Calculations---

$f3x = $f3 * cos($rad1);
$f3z = $f3 * sin($rad1);

$m2x = $m2 * cos($rad1);
$m2z = $m2 * sin($rad1);

$frx = $f3x;
$fry = $f2;
$frz = $f1 - $f3z;

#---Cross Products---
$a1 = 0;
$a2 = $da;
$a3 = 0;
$b1 = 0;
$b2 = 0;
$b3 = $f1;

$mx1 = $a2*$b3-$a3*$b2;
$my1 = ($a3 * $b1 - $a1 * $b3);
$mz1 = ($a1 * $b2 - $a2 * $b1);

$c1 = 0;
$c2 = $da + $db;
$c3 = 0;
$d1 = $f3x;
$d2 = 0;
$d3 = -$f3z;

$mx2 = $c2 * $d3 - $c3 * $d2;
$my2 = ($c3 * $d1 - $c1 * $d3);
$mz2 = ($c1 * $d2 - $c2 * $d1);

$mrx = $mx1 + $mx2 + $m2x;
$mry = $my1 + $my2;
$mrz = $mz1 + $mz2 + $m1 - $m2z;

