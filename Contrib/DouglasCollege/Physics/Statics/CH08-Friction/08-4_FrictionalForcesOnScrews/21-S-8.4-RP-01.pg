#-------------- Image Scaling---------------#
$imgScale = 0.26;

$height = $imgScale*1869;

$width = $imgScale*2735;
		#aspect ratio

#---- Random variables for this problem --------#
$F = random(100, 250, 10);
$mu_s = random(0.2, 0.3, 0.01);
$d = random(100, 150, 5);
$r = random(6, 8, 1);
$t = random(8, 10, 1);

#---- Formulas to compute answers --------------#
$theta = atan($t / (2 * pi * $r));
$phi = atan($mu_s);
$P = (2 * $d * $F) / ($r * tan($theta + $phi));

