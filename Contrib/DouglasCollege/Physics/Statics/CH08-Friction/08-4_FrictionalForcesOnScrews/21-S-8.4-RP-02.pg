#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.23;

$height = $imgScale*2213;

$width = $imgScale*2394;
		#aspect ratio

#---- Random variables for this problem --------#
$F = random(2, 5, 0.5);
$mu_s = random(0.2, 0.3, 0.01);
$r = random(4, 6, 1);
$t = random(2, 3, 1);

#---- Formulas to compute answers --------------#
$theta = atan($t / (2 * pi * $r));
$phi = atan($mu_s);
$M = 2 * $r * $F * tan($theta + $phi);

