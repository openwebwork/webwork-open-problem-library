#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1000;
$height = $imgScale*1711;


#---- Provided --------#
$w = random(500,1000,100);
$sd = random(0.5,1.5,0.25);
$l = random(0.15,0.25,0.05);
$us = random(0.3,0.4,0.05);
$d = random(3,9,3);

#---Calculations---
$theta = atan($l / (2*pi*$sd/2));
$phi = atan($us);
$M = $w * $sd/2 * tan ($phi-$theta);
$F = $M/(2*$d);



