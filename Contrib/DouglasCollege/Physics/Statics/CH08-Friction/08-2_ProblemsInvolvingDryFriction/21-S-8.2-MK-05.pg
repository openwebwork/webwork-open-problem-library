#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1500;
$height = $imgScale*1500;


#---- Provided --------#
$d1 = random(1,1.5,0.1);
$d2 = random(2,2.5,0.5);
$d3 = random(3,3.5,0.1);
$d4 = random(4.5,5.0,0.1);
$w = random(200,250,10);
$us = random(0.4,0.5,0.01);

#---Pushing---
$N = $w;
$p1 = $us * $w;

#---Tipping---
$p2 = $w * $d1 / $d4;

if($p2<$p1){
	$pmax = $p2;
}else{
	$pmax = $p1;
}

