#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1522;
$height = $imgScale*1000;


#---- Provided --------#
$f = random(100,150,10);
$m = random(0.5,0.95,0.05);
$g = 9.81;
$uh = random(0.3,0.6,0.1);
$ub = random(0.2,0.4,0.1);

#---Scenario 1---
$ff1 = $ub * $f;
$n0 = floor($ff1 * 2 / ($m*$g));
$n1 = floor($n0 + 2);

#---Scenario 2---
$ff2 = $uh * $f;
$n2 = floor($ff2 * 2 / ($m*$g));

if($n2<$n1){
	$nmax = $n2;
}else{
	$nmax = $n1;
}

$nf = floor($nmax);

