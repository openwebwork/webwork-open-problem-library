		#aspect ratio

#---- Random variables for this problem --------#
$m = random(40, 60, 5);
$mu_s = random(0.4, 0.5, 0.05);
$mu_k = random(0.25, 0.3, 0.05);
$g = 9.81;
$thetaDeg = random(20, 40, 5);

#---- Formulas to compute answers --------------#
$theta = $thetaDeg * pi / 180;
$F = ($mu_k * $m * $g) / (cos($theta) + $mu_k * sin($theta));

