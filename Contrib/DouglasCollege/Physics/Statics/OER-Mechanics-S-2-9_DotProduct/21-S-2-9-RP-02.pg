Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.15;

$height = $imgScale * 2799;

$width = $imgScale * 1950;
		#aspect ratio

#---- Random variables for this problem --------#
$F = random(400, 600, 50);
$d_1 = random(7, 8, 0.5);
$d_2 = random(8, 9, 0.5);
$d_3 = random(3, 4, 0.5);

#---- Formulas to compute answers --------------#
$AB = ($d_1 ** 2 + $d_2 ** 2 + $d_3 ** 2) ** 0.5;

$F_x = $F / $AB * $d_3;
$F_y = $F / $AB * $d_2;
$F_z = - $F / $AB * $d_1;

$AO_x = 0;
$AO_y = 0;
$AO_z = - $d_1;

$theta = acos($d_1 / $AB) * 180 / pi;

