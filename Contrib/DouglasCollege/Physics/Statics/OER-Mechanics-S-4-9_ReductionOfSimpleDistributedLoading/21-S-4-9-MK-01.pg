#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*2863;
$height = $imgScale*1100;


#---- Provided --------#
# random(lower, upper, stepsize)
$f = random(7,12,1); 
$d1 = random(3.5,6,0.4);
$d2 = random(1.5,2,0.1);
$d3 = random(1.5,2,0.1);
$d4 = random(1.5,2,0.1);
$d5 = random(3,5,1);

#---Reaction Forces---
$r = $f*$d1/2 + $f*($d2+$d3+$d4+$d5);
$d = (($f*$d1/2) * (2/3*$d1) + ($f*($d2+$d3+$d4+$d5))*(($d2+$d3+$d4+$d5)/2+$d1))/$r;


