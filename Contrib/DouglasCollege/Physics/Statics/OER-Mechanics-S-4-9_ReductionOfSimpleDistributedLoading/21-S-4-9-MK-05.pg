#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1800;
$height = $imgScale*1000;


#---- Provided --------#
# random(lower, upper, stepsize)
$p1 = random(2,3,1);
$p2 = random(4,5,1);
$d1 = random(4,7,1);
$d2 = random(1,2,0.5);

#---Calculations---
$r = $p1*($d1+$d2) + 0.5*($p2-$p1)*($d1+$d2);
$d = ($p1*($d1+$d2)*($d1+$d2)*0.5 + 0.5*($p2-$p1)*($d1+$d2)*($d1+$d2)*2/3)/$r;



