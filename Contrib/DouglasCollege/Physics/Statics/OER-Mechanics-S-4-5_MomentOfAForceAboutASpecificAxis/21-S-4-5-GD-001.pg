DOCUMENT();

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
	"PGbasicmacros.pl",
	"PGchoicemacros.pl",
	"PGanswermacros.pl",
	"PGauxiliaryFunctions.pl"
	#"source.pl",        # allows code to be displayed on certain sites.
	#"PGcourse.pl", 	 # Customization file for the course
   	);
	 
TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$F1 = random(400, 550, 25);
$F2 = random(200, 300, 25);
$F3 = random(100, 175, 25);
$d1 = random(1, 2, 0.25);
$d2 = random(0.25, 0.75, 0.25);
$d3 = random(0.25, 0.75, 0.25);
$d4 = random(0.25, 0.75, 0.25);


#computation
$Mx = -($d1 + $d2)*$F2 - ($d3)*$F3;
$My = -($d1)*$F1 - ($d4)*$F3;
$Mz = 0;


$imagescale = 0.20;
$width = $imagescale*2851;
$height = $imagescale*2867;
#set tolerance
Context()->flags->set(
tolerance=>.05,
tolType=>'relative');

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

What is the moment of the force about the x, y, and z axes?

([`F_1 = [$F1]`] [`N`], [`F_2 = [$F2]`] [`N`], [`F_3 = [$F3]`] [`N`], [`d_1 = [$d1]`] [`m`], [`d_2 = [$d2]`] [`m`], [`d_3 = [$d3]`] [`m`], and [`d_4 = [$d4]`] [`m`])


[@ image( "21-S-4-5-GD-001.png", width=>[$width], height=>[$height]) @]*


[`\bf M_{x} =`]  [_____]{"$Mx"} [`Nm`]

[`\bf M_{y} =`]  [_____]{"$My"} [`Nm`]

[`\bf M_{z} =`]  [_____]{"$Mz"} [`Nm`]

END_PGML

