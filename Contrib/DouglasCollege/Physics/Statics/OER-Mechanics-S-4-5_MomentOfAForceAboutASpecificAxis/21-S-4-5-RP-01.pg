#Setup

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.15;

$height = $imgScale*3238;

$width = $imgScale*3206;
		#aspect ratio

#---- Random variables for this problem --------#
$d_1 = random(0.6, 0.8, 0.1);
$d_2 = random(0.2, 0.3, 0.1);
$d_3 = random(0.4, 0.5, 0.1);
$d_4 = random(0.2, 0.3, 0.1);
$F = random(200, 400, 50);

#---- Formulas to compute answers --------------#
$AB = ($d_3 ** 2 + $d_4 ** 2) ** 0.5;
$u_AB_x = $d_3 / $AB;
$u_AB_y = $d_4 / $AB;
$u_AB_z = 0;

$M_AB = $u_AB_y * $d_1 * $F;

$M_AB_x = $M_AB * $u_AB_x;
$M_AB_y = $M_AB * $u_AB_y;
$M_AB_z = $M_AB * $u_AB_z;

