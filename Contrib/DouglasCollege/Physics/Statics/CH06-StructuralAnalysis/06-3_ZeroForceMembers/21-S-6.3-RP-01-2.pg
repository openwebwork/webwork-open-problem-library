#
#Setup

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.2;

$height = $imgScale*1892;

$width = $imgScale*3077;
		#aspect ratio

#---- Random variables for this problem --------#
$d1 = random(1.5, 2.5, 0.5);
$theta_1 = random(30, 45, 15);
$F = random(500, 750, 50);

#---- Formulas to compute answers --------------#
$theta_Rad = $theta_1 * pi / 180;

$F_BD = 0;
$F_BF = 0;

$F_BE = $F;
$F_EF = $F / (2 * sin($theta_Rad));
$F_DE = $F_EF;
$F_AF = $F_EF;
$F_CD = $F_EF;
$F_AB = $F / (2 * tan($theta_Rad));
$F_BC = $F_AB;

#---- Answers to the problem -----------------------#
$ansA = $F_AB;
$ansB = $F_AF;
$ansC = $F_BC;
$ansD = $F_BD;
$ansE = $F_BE;
$ansF = $F_BF;
$ansG = $F_CD;
$ansH = $F_DE;
$ansI = $F_EF;

########################################################
#PGML

BEGIN_PGML

