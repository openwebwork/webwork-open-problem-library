#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1100;
$height = $imgScale*1600;


#---- Provided --------#
# random(lower, upper, stepsize)

$x = random(2,7,1);
$y = random(2,7,1);
$h = sqrt($x**2 + $y**2);
$w = random(0.0200,0.0300,0.0005);
$n = 5;

#---Calculations---

$B = $w * $n;
$N = ($B - $w) / $y *$h;
$A = $N*$x/$h;


