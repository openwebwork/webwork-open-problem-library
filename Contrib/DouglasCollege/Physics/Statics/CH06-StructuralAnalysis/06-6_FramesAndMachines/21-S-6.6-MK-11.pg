#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1100;
$height = $imgScale*1833;


#---- Provided --------#
# random(lower, upper, stepsize)

$m = random(300,500,25);
$f = $m * 9.81;
$d1 = random(400,600,25);
$d2 = random(50,60,5);
$d3 = random(50,60,5);
$d4 = random(350,450,10);
$d5 = random(90,100,5);
$deg = random(27,32,0.5);
$rad = $deg * pi / 180;


#---Calculations---

$c = $f*$d1*cos($rad)/($d2+$d3);
$ax = $c;
$ay = $f;

$d = ($ax * $d2 - $ay * $d5)/($d3+$d4);


