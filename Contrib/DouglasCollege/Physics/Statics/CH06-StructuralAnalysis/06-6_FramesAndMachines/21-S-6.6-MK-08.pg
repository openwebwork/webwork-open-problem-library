#---- Provided --------#
# random(lower, upper, stepsize)

$M = random(60,80,5);
$d1 = random(2,3,0.5);
$d2 = random(3,5,0.5);
$d3 = random(0.25,0.75.0.25);


#---Calculations---

$Dx = $M/$d3;
$Ax = $Dx;
$Ay = 0;
$C = $Dx*$d3/$d2;



