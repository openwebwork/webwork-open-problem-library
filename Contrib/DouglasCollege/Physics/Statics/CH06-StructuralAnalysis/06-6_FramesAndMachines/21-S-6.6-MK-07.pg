#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1614;
$height = $imgScale*1100;


#---- Provided --------#
# random(lower, upper, stepsize)

$f = random(1000,2000,100);
$d1 = random(3,5,0.5);
$d2 = random(2,4,0.5);
$d3 = random(3,5,0.5);
$deg = random(40,60,5);
$rad = $deg * pi / 180;

#---Calculations---

$By = $f*$d3/($d2+$d3);
$Bx = $By*cos($rad)*$d1/(sin($rad)*$d1);
$Cx = $Bx;
$Cy = $f - $By;


