#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1400;
$height = $imgScale*1100;


#---- Provided --------#
# random(lower, upper, stepsize)

$f = random(3,7,1);
$d1 = random(3,3.5,0.5);
$d2 = random(1,1.2,0.1);
$d3 = random(1.25,1.75,0.25);
$d4 = random(0.9,1.1,0.1);
$d5 = random(0.7,0.75,0.05);
$deg = random(15,20,1);
$rad = $deg * pi / 180;
$radCD = atan(($d4+$d5)/$d1);

#---Calculations---

$CD = $f*($d1+$d2)/(sin($radCD)*$d2);
$Ex = $CD*cos($radCD);

$A = $Ex*($d4+$d5)/(sin($rad)*$d5 + cos($rad)*$d3);

