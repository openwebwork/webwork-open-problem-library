#
#Setup

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Vector");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.15;

$height = $imgScale*3927;

$width = $imgScale*3312;
		#aspect ratio

#---- Random variables for this problem --------#
$m = random(5, 20, 1);
$g = 9.81;

#---- Formulas to compute answers --------------#
$Ax = 0;
$Ay = 0;
$Az = -1;

$ABx = 0;
$ABy = sin(pi / 4);
$ABz = cos(pi / 4);

$ACx = - sin(pi / 6);
$ACy = - cos(pi / 6) * sin(pi / 3);
$ACz = cos(pi / 6) * cos(pi / 3);

$ADx = - $ACx;
$ADy = $ACy;
$ADz = $ACz;

$F_A = $m * $g;
$F_AB = (6 ** (0.5) * $F_A) / (1 + 3 ** (0.5));
$F_AC = (2 ** (0.5) * $F_AB) / 3;
$F_AD = $F_AC;

#---- Answers to the problem -----------------------#
$ansAx = $Ax;
$ansAy = $Ay;
$ansAz = $Az;

$ansBx = $ABx;
$ansBy = $ABy;
$ansBz = $ABz;

$ansCx = $ACx;
$ansCy = $ACy;
$ansCz = $ACz;

$ansDx = $ADx;
$ansDy = $ADy;
$ansDz = $ADz;

$ansE = $F_A;
$ansF = $F_AB;
$ansG = $F_AC;
$ansH = $F_AD;

