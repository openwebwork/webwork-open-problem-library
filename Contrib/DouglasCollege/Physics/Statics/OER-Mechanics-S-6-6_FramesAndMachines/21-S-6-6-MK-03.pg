#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1100;
$height = $imgScale*1000;


#---- Provided --------#
# random(lower, upper, stepsize)

$m1 = random(1,1.2,0.05);
$g = 9.81;
$f1 = $m1 * 1000 * $g;
$m2 = random(200,10,300);
$f2 = $m2 * $g;
$d1 = random(1,1.5,0.1);
$d2 = random(0.7,0.8,0.1);
$d3 = random(0.1,0.2,0.05);
$d4 = 0.5;
$d5 = random(1,1.5,0.1);

$deg1 = random(30,35,1);


$rad1 = $deg1 * pi() / 180;


#---Entire skid-steer---
$B = ($f1*($d2-$d3)-$d1*$f2)/$d2;
$A = $f1 + $f2 - $B;

#---Arm---
$CD = $f2 * ($d1+$d5)/(2*$d5*sin($rad1));
$Ex = $CD*cos($rad1);
$Ey = $CD*sin($rad1) - $f2/2;
$E = sqrt($Ex**2 + $Ey**2);



