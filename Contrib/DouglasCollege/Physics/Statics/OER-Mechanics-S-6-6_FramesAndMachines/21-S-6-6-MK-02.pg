#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1293;
$height = $imgScale*1000;


#---- Provided --------#
# random(lower, upper, stepsize)

$m = random(1,2,0.25);
$g = 9.81;
$f = $m * 1000 * $g;
$d1 = random(0.2,0.35,0.05);
$d2 = random(0.2,0.35,0.05);
$d3 = random(1.5,2,0.25);
$d4 = random(1.75,2.25,0.25);
$d5 = random(0.3,0.5,0.05);

$deg1 = random(50,60,1);
$deg2 = random(10,15,1);
$deg3 = random(25,35,1);

$rad1 = $deg1 * pi() / 180;
$rad2 = $deg2 * pi() / 180;
$rad3 = $deg3 * pi() / 180;

#---Member FGH---
$EF = $f*$d5/(sin($rad3) * $d3);

#---Member CEFFHG---
$AD = $f * ($d5 + ($d1+$d2+$d3)*cos($rad2))/($d1*sin($rad1-$rad2));

$mef = RadioButtons([ "Tension", "Compression" ], "Tension");
$mad = RadioButtons([ "Tension", "Compression" ], "Compression");

######################################################
#PGML

BEGIN_PGML

[@ image( "21-S-6-6-MK-02.png", width=>[$width], height=>[$height]) @]*

