#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1696;
$height = $imgScale*1100;


#---- Provided --------#
# random(lower, upper, stepsize)
$n = random(2,4,1);
$a = random(2,12,2);
$h = $a/2;

#---Calculations---

#---x---
$Mx = $h*$a**($n+2)/($a**$n * ($n+2));
$mx = ($h * $a**($n+1))/($a**$n * ($n+1));
$x = $Mx/$mx;

#---y---
$My = ($a*$h**2)/2 - $n * $h**((1+2*$n)/$n)/(1+2*$n) * $a/$h**(1/$n);
$my= $a*$h - $n * $h**((1+$n)/$n)/(1+$n) * $a/$h**(1/$n);
$y = $My/$my;
