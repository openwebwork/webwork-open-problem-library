[`A =`] [___]{"$A"} [`\: \textrm{in^2}`]

[`(\bar{x}, \bar{z}) = \: (`] [___]{"$x_bar"} [` \: ,`] [___]{"$z_bar"} [`) \: \textrm{in}`]


