#---- Random variables for this problem --------#
$P = random(150, 300, 50);
$d = random(2.5, 3.5, 0.5);

#---- Formulas to compute answers --------------#
$m = $P / (2 * $d);
$A_x = 0;
$A_y = $d * $P;
$M_A = 4 / 3 * ($d ** 2) * $P;

$N_B = 0;
$V_B = 3 / 4 * $d * $P;
$M_B = 5 / 12 * ($d ** 2) * $P;

