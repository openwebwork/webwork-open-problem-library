#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1800;
$height = $imgScale*1000;


#---- Provided --------#
# random(lower, upper, stepsize)
$p1 = random(2,3,1);
$p2 = random(4,5,1);
$d1 = random(4,7,1);
$d2 = random(1,2,0.5);

#---Calculations---
$tri = $p2-$p1;
$fsq = $p1 * ($d1+$d2);
$lsq = ($d1 + $d2)/2;
$ftr = $tri * ($d1 + $d2) / 2;
$ltr = ($d1 + $d2) * 2 /3;
$dre = ($fsq * $lsq + $ftr * $ltr) / ($fsq + $ftr);

#---Resultant Forces---
$B = $dre * ($fsq + $ftr) / $d1;
$A = ($fsq + $ftr) * ($d1 - $dre) / $d1;


#---Max shear stress---
$m = ($p2-$p1)/($d1+$d2);
$Va = $A;
$Vbl = $Va - $p1 * $d1 - ($m*$d1) * $d1/2;
$Vbr = $Vbl + $B;
$Vc = $Vbr - ($m*$d1+$p1) * $d2 - ($m*$d2) * $d2/2;

#---Max bending moment
$Ma = 0;
$Mb = $Va *$d1 - $p1 * $d1 * $d1/2 - ($m*$d1) * $d1/2 * $d1/3;
$Mc = $Vbr * $d2 - ($m*$d1+$p1) * $d2 * $d2/2 - ($m*$d2) * $d2/2 * $d2/3;

#---Vmax
if(abs($Vbl)<abs($Vbr)){
	$Vmax = $Vbr;
}else{
	$Vmax = $Vbl;
}

#---Mmax
$Mmax = $Mb;
