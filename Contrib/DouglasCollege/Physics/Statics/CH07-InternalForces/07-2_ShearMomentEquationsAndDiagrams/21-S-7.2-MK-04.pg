$height = $imgScale*1100;


#---- Provided --------#
# random(lower, upper, stepsize)
$f1 = random(3,5,1);
$M = random(30,45,5);
$d1 = random(3,5,1);
$d2 = random(3,5,1);
$d3 = random(3,5,1);
$d4 = random(3,5,1);

#---Calculations
$Ay = ($M - ($f1*$d4)) / ($d2 + $d3);
$Vc = $Ay;
$Mc = $Ay * $d2 - $M;
$Nc = 0;

