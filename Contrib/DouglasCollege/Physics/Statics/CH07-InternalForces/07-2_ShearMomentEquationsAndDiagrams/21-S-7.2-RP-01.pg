#---- Random variables for this problem --------#
$F_1 = random(10, 15, 1);
$P = random(8, 12, 1);
$d = random(1, 1.5, 0.25);

#---- Formulas to compute answers --------------#
$A_x = 0;
$A_y = (3 * $F_1 + 2 * $d * $P) / 4;
$x_V = 5 * $d / 2 - $F_1 / (4 * $P);
$x_M = $x_V;
$V_min = 0;
$M_max = $x_M * ((10 * $d - 2 * $x_M) * $P - $F_1) / 4 + $d * $F_1 - 2 * ($d ** 2) * $P;

