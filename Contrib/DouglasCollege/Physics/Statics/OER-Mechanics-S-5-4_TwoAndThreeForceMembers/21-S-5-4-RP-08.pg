#
#Setup

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.21;

$height = $imgScale*2415;

$width = $imgScale*2866;
		#aspect ratio

#---- Random variables for this problem --------#
$d1 = random(1.25, 2.5, 0.25);
$d2 = $d1 + random(-0.25, 0.25, 0.25);
$d3 = $d1 + random(-0.5, 0.5, 0.25);

$F = random(300, 500, 50);
$m = random(30, 50, 5);
$g = 9.81;

#---- Formulas to compute answers --------------#
$theta_CD = atan($d3 / $d1) * 180 / pi;
$theta_F = $theta_CD;
$theta_F_Rad = $theta_F * pi / 180;

$deltaTheta = 0;

$F_CD = (($d1 + $d2) / 2 * $m * $g + ($d1 + $d2) * $F) / ($d1 * sin($theta_F_Rad));
$Ax = - $F_CD * cos($theta_F_Rad);
$Ay = $F + $m * $g - $F_CD * sin($theta_F_Rad);

#---- Answers to the problem -----------------------#
$ansA = $theta_CD;
$ansB = $theta_F;
$ansC = $deltaTheta;
$ansD = $Ax;
$ansE = $Ay;
$ansF = $F_CD;

