#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1500;
$height = $imgScale*1500;


#---- Provided --------#
# random(lower, upper, stepsize)
$f = random(100,1000,100);
$p = random(100,400,100);
$d1 = random(3,5,1);
$d2 = random(1,3,0.5);
$d3 = random(1,3,0.5);
$hyp = sqrt(($d2+$d3)**2 + ($d1)**2);

#---Reaction Forces---
$C = ($p * $d2 * $d2/2 + $f * $d2) / (($d2 + $d3) * $d1/$hyp);
$Ay = $p*$d2 + $f - $C * $d1/$hyp;
$Ax = $C * ($d2+$d3)/$hyp;


