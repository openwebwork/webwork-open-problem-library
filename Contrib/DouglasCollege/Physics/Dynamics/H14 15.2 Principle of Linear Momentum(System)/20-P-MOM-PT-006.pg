Context("Numeric");         # or Complex
#given    
$t = random(0.100,0.500,0.001);  # (lower, upper, stepsize)
$m=random(0.400,0.700,0.001);
$v1=random(30,45,0.5);
$v2=random(70,87,0.5);


#Computation
$I=($v1+$v2)*$m;
$F=$I/$t;
   


#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*2530;
$height = $imgScale*2058;





#set tolerance
