DOCUMENT();


loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
	#"source.pl",        # allows code to be displayed on certain sites.
	#"PGcourse.pl", 	 # Customization file for the course
   	);

TEXT(beginproblem());

##############################################################
#
#  Setup
#
#


Context("Numeric");
#given
$A = random(20, 45, 5);
$B = random(100, 300, 25);

#computation
$convert = $A/(3.6) ; 
$dottheta = $convert/$B ; 

#set tolerance
Context()->flags->set(
tolerance=>.0003,
tolType=>'relative');

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

The particle moves with a speed of [`[$A]`] [`\frac{km}{h}`]. Find the angular velocity [`\dot{\theta}`] if the radius of travel is [`[$B]`] [`m`] at this instant.

[`\dot{\theta} =`][_____]{"$dottheta"}

END_PGML

##############################################################

BEGIN_PGML_SOLUTION

[@ image( "20-P-KM-AF-020.pdf", width=>[0], height=>[0]) @]*

END_PGML_SOLUTION

