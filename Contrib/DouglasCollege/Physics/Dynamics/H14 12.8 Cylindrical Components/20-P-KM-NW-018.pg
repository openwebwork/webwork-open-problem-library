DOCUMENT();

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
	#"source.pl",        # allows code to be displayed on certain sites.
	#"PGcourse.pl", 	 # Customization file for the course
   	);

TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Numeric");         # or Complex
#given
$length = random(0.7,1.3,0.2);     # (lower, upper, stepsize)
$area = random(0.5,1.1,0.2);
$time = random(0.3,0.9,0.1);

#computation
$velocity = $area/(pi*$length**2)*2*pi/$time;

#image scale
$imgScale = 0.25;

#image aspect ratio
$width = $imgScale*1288;
$height = $imgScale*1152;

#set tolerance
Context()->flags->set(
tolerance=>.05,
tolType=>'absolute');  #absolute or relative

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

[@ image( "20-P-KM-NW-018.png", width=>[$width], height=>[$height]) @]*

What is the angular velocity of a [`[$length]`] [`m`] baseball bat that sweeps through a cross-sectional sector of [`[$area]`] [`m^2`] in [`[$time]`] seconds?

[`\dot{\theta} =`][___]{"$velocity"} [`rad/s`]

END_PGML

