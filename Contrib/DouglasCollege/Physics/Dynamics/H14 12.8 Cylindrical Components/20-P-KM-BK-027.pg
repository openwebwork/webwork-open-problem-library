TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$r = random(5,8,1);
$a = 4;
$h = random(3,5,1);
$t = random(10,15,1);

#computation
$dtheta = $a*$t*2*3.14159/$h;
$ddtheta = $a*2*3.14159/$h;
$at = sqrt(($r*$ddtheta)**2 + ($r*$dtheta**2)**2 + ($a)**2);




#set tolerance
Context()->flags->set(
tolerance=>.05,
tolType=>'relative');

##############################################################
