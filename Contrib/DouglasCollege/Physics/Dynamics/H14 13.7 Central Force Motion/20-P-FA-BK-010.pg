TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$hp = random(500,800,100);
$ha = random(2000,3000,100);

#computation
$re = 6378;
$ra = ($ha + $re)*1000;
$rp = ($hp + $re)*1000;

$G = 66.73*(10**(-12));
$M = 5.9767*(10**(24));



$vp = sqrt((2*$G*$M*$ra)/(($rp)*($ra + $rp)));
$va = $vp*$rp/$ra;

#set tolerance
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');

