	#"PGcourse.pl", 	 # Customization file for the course
   	);

TEXT(beginproblem());

##############################################################
#
#  Setup
#
#


Context("Numeric");
#given
$ma = random(3, 10, 1);
$mb = random(10, 15, 1);
$uk = random(0.1,0.5,0.1);

#computation for numerical answer
$Atop = $ma*9.8 - $uk*$mb*9.8;
$Abot = $ma + $mb;
$A = $Atop/$Abot;

$T = $ma*9.8 - $ma*$A;

$width = 350;
$height = 300;
#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

The friction coefficent for this block is [`\mu = [$uk]`], block B has a mass of [`[$mb] \: kg`] and block A has a mass of [`[$ma] \: kg`]. What is the accleeration of block B? What is the tension in the rope?

_use 9.81 for gravity and negative to indicate downwards_

[@ image( "20-P-FA-AF-013.png", width=>[$width], height=>[$height]) @]* 

[`T = `][_____]{"$T"}[`N`]


[`a_{B} = `][_____]{"$A"}[`m/s^2`]

END_PGML

BEGIN_PGML_SOLUTION

[@ image( "20-P-FA-AF-013.pdf", width=>[0], height=>[0]) @]*

END_PGML_SOLUTION

