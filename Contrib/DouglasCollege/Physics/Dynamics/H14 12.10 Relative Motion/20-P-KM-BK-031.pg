##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$h = random(10,30,1);
$re = 6400;
$ro = 6800;
$te = 24*60*60;
$to = 90*60;


#computation
$v1 = $ro*2*3.14159/$to;
$ve = $re*2*3.14159/$te;

$v2 = sqrt(($v1+cos($h*3.14159/180)*$ve)**2 + (sin($h*3.14159/180)*$ve)**2);


#set tolerance
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');

