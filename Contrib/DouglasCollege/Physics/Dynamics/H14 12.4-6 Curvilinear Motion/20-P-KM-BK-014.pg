	#"PGcourse.pl", 	 # Customization file for the course
   	);

TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$vx = random(3,8,1);
$x = random(3,8,1);

#computation
$y = $x**2;
$vy = 2*$x*$vx;
$ay = 2*$vx**2;

#set tolerance
Context()->flags->set(
tolerance=>.05,
tolType=>'relative');

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

A particle travels along the parabola [`y = x^2`], 
such that it maintains a constant horizontal velocity [`v_x = [$vx]`] [`m/s`].  
Find [`y`], [`v_y`], and [`a_y`] when [`x = [$x]`] [`m`].

[`y=`] [_____]{"$y"} [`m`]  
[`v_y=`] [_____]{"$vy"} [`m/s`]  
[`a_y=`] [_____]{"$ay"} [`m/s^2`]  

END_PGML

