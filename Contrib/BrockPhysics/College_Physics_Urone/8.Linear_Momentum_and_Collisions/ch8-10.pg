## **************************************
## Impulse and Momentum, Ch8, problem 10, D'Agostino, 22 May 2017
## 
## **************************************
$m1=3.6;
$v01=4.1;
$m2=3.6;
$v02=0;
$v1=(($m1-$m2)/($m1+$m2))*$v01;
$v2=(2*$m1/($m1+$m2))*$v01;

#$string = image('k_q1.png',width => 200, height => '', extra_html_tags =>
#'align="middle"', tex_size => 400);
