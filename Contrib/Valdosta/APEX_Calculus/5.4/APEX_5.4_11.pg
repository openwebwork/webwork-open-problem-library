#Problem APEX 5.4.11

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
);

## DBsubject(Calculus - single variable)
## DBchapter(Integrals)
## DBsection(Definite integrals (without trigonometric functions))
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('5.4')
## Problem1('11')

## Also handles problem 14

TEXT(beginproblem());

###################################
# Setup


## a)
$a = random(2,5,1);

$a1 = random(-3,-1,1);
$b1 = random(1,4,1);

$f = "$a^x";

$fI = Formula("($a^x)/ln($a)");
$ans1 = $fI->eval(x=>$b1) - $fI->eval(x=>$a1);

## b)
$b = random(2,15,1)*random(-1,1,2);

$a2 = random(-3,-1,1);
$b2 = random(1,4,1);

$g = "$a e^x";

$gI = Formula("$a e^x");
$ans2 = $gI->eval(x=>$b2) - $gI->eval(x=>$a2);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
$PAR
Evaluate the definite integrals
$PAR
a) \(\displaystyle\int_{$a1}^{$b1} $f \, dx = \) 
\{ans_rule(15)\} 
$BR$HR
$PAR
b) \(\displaystyle\int_{$a2}^{$b2} $g \, dx = \) 
\{ans_rule(15)\} 
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

###################################

$c2 = $c * 2;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
Use the Fundamental Theorem of Calculus.
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a1}^{$b1} $f \, dx &=&
    \left(\dfrac{$a^x}{\ln $a} \right) \Big|_{$a1}^{$b1}\\
    &=& \dfrac{$a^{$b1} - $a^{$a1}}{\ln $a}\\
    &\approx& $ans1
  \end{array}
\]
$BR$HR
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a2}^{$b2} $g \, dx
    &=& \left( $g \right) \Big|_{$a2}^{$b2}\\
    &=& $b (e^{$b2} - e^{$a2})\\
    &\approx& $ans2
  \end{array}
\]
END_SOLUTION
ENDDOCUMENT();    
