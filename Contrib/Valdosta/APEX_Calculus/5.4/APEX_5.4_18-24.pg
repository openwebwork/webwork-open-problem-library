#Problem APEX 5.4.18-24

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

## DBsubject(Calculus - single variable)
## DBchapter(Integrals)
## DBsection(Definite integrals (without trigonometric functions))
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('5.4')
## Problem1('18-24')

TEXT(beginproblem());

###################################
# Setup


## a)
$a1 = 1;
$b1 = random(2,9,1);

$f = "\dfrac{1}{x}";

$fI = Formula("ln(x)");
$ans1 = $fI->eval(x=>$b1) - $fI->eval(x=>$a1);

## b)
$a2 = 1;
$b2 = random(2,9,1);

$g = "\dfrac{1}{x^2}";

$gI = Formula("-1/x");
$ans2 = $gI->eval(x=>$b2) - $gI->eval(x=>$a2);

## c)
$a3 = 1;
$b3 = random(2,9,1);

$e3 = random(3,6,1);

$h = "\dfrac{1}{x^{$e3}}";

$hI = Formula("(x^(1-$e3))/(1-$e3)");
$ans3 = $hI->eval(x=>$b3) - $hI->eval(x=>$a3);

## d)
$a4 = 0;
$b4 = random(1,9,1);

$F = "x^2";

$FI = Formula("(x^3)/3");
$ans4 = $FI->eval(x=>$b4) - $FI->eval(x=>$a4);

## e)
$a5 = 0;
$b5 = 1;

$e5 = random(10,100,5);
$G = "x^{$e5}";

$GI = Formula("(x^{$e5 + 1})/($e5 + 1)");
$ans5 = $GI->eval(x=>$b5) - $GI->eval(x=>$a5);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
$PAR
Evaluate the definite integrals
$PAR
a) \(\displaystyle\int_{$a1}^{$b1} $f \, dx = \) 
\{ans_rule(15)\} 
$BR$HR
$PAR
b) \(\displaystyle\int_{$a2}^{$b2} $g \, dx = \) 
\{ans_rule(15)\} 
$BR$HR
$PAR
c) \(\displaystyle\int_{$a3}^{$b3} $h \, dx = \) 
\{ans_rule(15)\}
$BR$HR
$PAR
d) \(\displaystyle\int_{$a4}^{$b4} $F \, dx = \) 
\{ans_rule(15)\}
$BR$HR
$PAR
e) \(\displaystyle\int_{$a5}^{$b5} $G \, dx = \) 
\{ans_rule(15)\}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));
ANS(num_cmp($ans5));

###################################

$ee = $e3 - 1;
$eee = $e5 + 1;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
Use the Fundamental Theorem of Calculus.
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a1}^{$b1} $f \, dx &=&
    \left(\ln |x| \right) \Big|_{$a1}^{$b1}\\
    &=& \ln($b1) - \ln($a1)\\
    &=& \ln $b1
  \end{array}
\]
$BR$HR
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a2}^{$b2} $g \, dx
    &=& \left( -\dfrac{1}{x} \right) \Big|_{$a2}^{$b2}\\
    &=& -\dfrac{1}{$b2} + 1
    &=& $ans2
  \end{array}
\]
$BR$HR
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a3}^{$b3} $h \, dx &=&
    \left(-\dfrac{x^{-$ee}}{$ee} \right) \Big|_{$a3}^{$b3}\\
    &&\\
    &=& -\dfrac{($b3)^{-$ee}}{$ee} + \dfrac{1}{$ee} \\
    &&\\
    &=& $ans3
  \end{array}
\]
$BR$HR
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a4}^{$b4} $F \, dx
    &=& \left( \dfrac{x^3}{3} \right) \Big|_{$a4}^{$b4}\\
    &&\\
    &=& \dfrac{($b4)^3}{3} - 0\\
    &&\\
    &=& $ans4
  \end{array}
\]
$BR$HR
\[
  \begin{array}{rcl}
    \displaystyle \int_{$a5}^{$b5} $G \, dx
    &=& \left( \dfrac{x^{$eee}}{$eee} \right) \Big|_{$a5}^{$b5}\\
    &&\\
    &=& \dfrac{($b5)^{$eee}}{$eee} - 0\\
    &&\\
    &=& \dfrac{1}{$eee}
  \end{array}
\]
END_SOLUTION
ENDDOCUMENT();    
