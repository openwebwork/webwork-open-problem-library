);

## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('2.6')
## Problem1('15')

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a1 = random(2,7,1);
$b1 = random(2,7,1);
$b2 = 2*$b1;
$c1 = random(2,7,1);

$f = "$a1 \sin x  + $b1 \cos y";
$g = "$c1";

Context("Numeric");
Context()->variables->add(y=>'Real');

$ans = Compute("$a1 cos(x) / ($b1 sin(y))")->reduce;;


BEGIN_TEXT

$PAR
Find \(\displaystyle \frac{dy}{dx} \) using implicit differentiation.
\[
  $f = $g
\]

$PAR

\( \dfrac{dy}{dx} = \) \{ans_rule(25)\}

END_TEXT

ANS($ans->cmp);


SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
\[
  \begin{array}{rcl}
   \dfrac{d}{dx}[$f] &=& \dfrac{d}{dx}[$g]\\
   &&\\
   $a1 \cos x - $b1 \sin y \dfrac{dy}{dx} &=& 0 \\
   &&\\
   \dfrac{dy}{dx} &=& \dfrac{$a1 \cos x}{$b1 \sin y}
  \end{array}
\]
END_SOLUTION

ENDDOCUMENT();    

