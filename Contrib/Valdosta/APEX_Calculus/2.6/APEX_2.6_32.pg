## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('2.6')
## Problem1('32')

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


$a=random(2,10,1);
$b=random(2,10,1);
$c=random(2,10,1);
$d=random(-20,20,1);
$p=random(3,5,1);
$pa = $p*$a;
$p1 = $p - 1;
$b2 = $b * 2;

$f = "$a x^{$p} + $b y^2 + $c y";
$g = "$d";

$q = $p1 * $pa;
$p2 = $p1 - 1;

$pab2 = $pa * $b2;

$ans1 = "(-$pa x^{$p1})/($b2 y + $c)";
$ans2 = "[-$q x^{$p2}($b2 y + $c) + $pab2 x^{$p1}*[
   -$pa x^{$p1}]/[$b2 y + $c] ]/
    [($b2 y + $c)^2]";



BEGIN_TEXT
$PAR
Let
 \($f = $g\).

$PAR
\( \dfrac{dy}{dx} = \) \{ans_rule(25)\}
$PAR
\( \dfrac{d^2y}{dx^2} = \) \{ans_rule(25)\}

END_TEXT

ANS(fun_cmp($ans1, vars=>['x','y']));
ANS(fun_cmp($ans2, vars=>['x','y']));


SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
\[
  \begin{array}{rcl}
    \dfrac{d}{dx}\left[ $f \right] &=& 
    \dfrac{d}{dx}\left[ $d \right] \\
    &&\\
    $pa x^{$p1} + $b2 yy'+ $c y' &=& 0 \\
    \dfrac{dy}{dx} &=& 
    \dfrac{-$pa x^{$p1}}{$b2 y + $c}
  \end{array}
\]
$PAR
\[
  \begin{array}{rcl}
    \dfrac{d^2y}{dx^2} &=& 
    \dfrac{d}{dx}\left[     \dfrac{-$pa x^{$p1}}{$b2 y + $c} \right] \\
    &&\\
    &=& \dfrac{  ($b2 y + $c)(-$q x^{$p2}) + $pa x^{$p1}($b2 y')}
    {($b2 y + $c)^2} \\
    &&\\
    &=& \dfrac{ -$q x^{$p2}($b2 y + $c) + $pab2 x^{$p1} y'}
    {($b2 y + $c)^2} \\
  \end{array}
\]
$BR
For the final answer, substitute 
\(y' = \dfrac{-$pa x^{$p1}}{$b2 y + $c}\).
\[
   \frac{d^2y}{dx^2} = 
   \dfrac{ -$q x^{$p2}($b2 y + $c) + $pab2 x^{$p1}\left(
   \dfrac{-$pa x^{$p1}}{$b2 y + $c}\right) }
    {($b2 y + $c)^2} 
\]


END_SOLUTION

