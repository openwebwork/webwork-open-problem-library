#Problem APEX 2.6.19

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('2.6')
## Problem1('19')

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a = random(2,7,1);
$a1 = $a - 1;
$c = random(10,50,5);

$f = "x^{$a}";
$fp = "$a x^{$a1}";

$choice = random(1,2,1);
if ($choice==1) {
  $g = "\tan y";
  $gp = "\sec^2 y";
  $deriv = "-\dfrac{$a \tan y}{x \sec^2 y}";
  $ans = "-$a tan(y)/[x*(sec(y)^2)]";
} else {
  $g = "\cot y";
  $gp = "-\csc^2 y";
  $deriv = "\dfrac{$a \cot y}{x \csc^2 y}";
  $ans = "$a cot(y)/(x csc(y)^2)";
}


BEGIN_TEXT

$PAR
Find \(\displaystyle \frac{dy}{dx} \) using implicit differentiation.
\[
  $f$g = $c
\]

$PAR

\( \dfrac{dy}{dx} = \) \{ans_rule(25)\}

END_TEXT

ANS(fun_cmp($ans, vars=>['x','y']));


SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
\[
  \begin{array}{rcl}
   \dfrac{d}{dx}[$f$g] &=& \dfrac{d}{dx}[$c]\\
   &&\\
   $f($gp) \dfrac{dy}{dx} + $fp$g &=& 0 \\
   &&\\
   \dfrac{dy}{dx} &=& \dfrac{-$fp$g}{$f($gp)} = $deriv
  \end{array}
\]
END_SOLUTION

ENDDOCUMENT();    

