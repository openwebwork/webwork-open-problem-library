#Problem APEX 1.1.18

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);

## DBsubject(Calculus - single variable)
## DBchapter(Limits and continuity)
## DBsection(Estimating limits numerically)
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('1.1')
## Problem1('18')

$showPartialCorrectAnswers = 0;
$solutionexits=1;
$a=random(-5,5);

$b=random(2,9);
$c=random(-8,8);

$a1=0.1;
$a01=0.01;

$ax1=-0.1;
$ax01=-.01;

$ans1 = 2*$a + $b + $a1;
$ans2 = 2*$a + $b + $ax1;
$ans3 = 2*$a + $b + $a01;
$ans4 = 2*$a + $b + $ax01;



TEXT(beginproblem());

BEGIN_TEXT
$BR
A function \(f\) and value \(a\) are given.
Approximate the limit of the difference quotient,
$BR
\(
  \lim\limits_{h \to 0} \frac{f(a+h) - f(a)}{h},
\)
using \(h = \pm 0.1, \pm 0.01\).
$BR
$BR
\( f(x) =  x^2 + $b x + $c, \qquad a = $a \)
$BR
$BR
When \( h = $a1 \), \( \frac{f(a+h) - f(a)}{h} \) = \{ans_rule(10)\}
$BR
When \( h = $ax1 \), \( \frac{f(a+h) - f(a)}{h} \) = \{ans_rule(10)\}
$BR
$BR
When \( h = $a01 \), \( \frac{f(a+h) - f(a)}{h} \) = \{ans_rule(10)\}
$BR
When \( h = $ax01 \), \( \frac{f(a+h) - f(a)}{h} \) = \{ans_rule(10)\}
$BR


END_TEXT

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR

Plug in each value of \(h\) into the expression
\( \frac{f(a+h) - f(a)}{h} \).
$BR
\{begintable(2)\}
        \{row(" \(h\) ", " \( \frac{f(a+h) - f(a)}{h} \) ", @firstrow)\}
        \{row(" $a1 ", " $ans1 " , @secondrow)\}
        \{row(" $ax1 ", " $ans2 " , @thirdrow)\}
        \{row(" $a01 ", " $ans3 " , @fourthrow)\}
        \{row(" $ax01 ", " $ans4 " , @fifthrow)\}
        \{endtable()\}$BR

END_SOLUTION

ANS( num_cmp( $ans1 ) );
ANS( num_cmp( $ans2 ) );
ANS( num_cmp( $ans3 ) );
ANS( num_cmp( $ans4 ) );

ENDDOCUMENT();

