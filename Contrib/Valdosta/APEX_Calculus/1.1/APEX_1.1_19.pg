#Problem APEX 1.1.19

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);

## DBsubject(Calculus - single variable)
## DBchapter(Limits and continuity)
## DBsection(Estimating limits numerically)
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('1.1')
## Problem1('19')

$showPartialCorrectAnswers = 0;
$solutionexits=1;
$a=random(0,6);
$b=random(1,10);
$c=random(1,10);

$h1=0.1;
$h01=0.01;

$hx1=-0.1;
$hx01=-.01;

$ans1 = -$b / ( ($a + $c) * ($a + $h1 + $c) );
$ans2 = -$b / ( ($a + $c) * ($a + $hx1 + $c) );
$ans3 = -$b / ( ($a + $c) * ($a + $h01 + $c) );
$ans4 = -$b / ( ($a + $c) * ($a + $hx01 + $c) );

TEXT(beginproblem());

BEGIN_TEXT
$BR
A function \(f\) and value \(a\) are given.
Approximate the limit of the difference quotient,
$BR
\(
  \lim\limits_{h \to 0} \frac{f(a+h) - f(a)}{h},
\)
using \(h = \pm 0.1, \pm 0.01\).
$BR
$BR
\( f(x) = \frac{$b}{x + $c}, \qquad a = $a \)
$BR
$BR
When \( h = $h1 \), \( \frac{f(a+h) - f(a)}{h} \) = \{ans_rule(10)\}
$BR
When \( h = $hx1 \), \( \frac{f(a+h) - f(a)}{h} \) = \{ans_rule(10)\}
$BR
$BR
When \( h = $h01 \), \( \frac{f(a+h) - f(a)}{h} \) = \{ans_rule(10)\}
$BR
When \( h = $hx01 \), \( \frac{f(a+h) - f(a)}{h} \) = \{ans_rule(10)\}
$BR

END_TEXT

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR

Plug in each value of \(h\) into the expression
\( \frac{f(a+h) - f(a)}{h} \).
$BR
\{begintable(2)\}
        \{row(" \(h\) ", " \( \frac{f(a+h) - f(a)}{h} \) ", @firstrow)\}
        \{row(" $h1 ", " $ans1 " , @secondrow)\}
        \{row(" $hx1 ", " $ans2 " , @thirdrow)\}
        \{row(" $h01 ", " $ans3 " , @fourthrow)\}
        \{row(" $hx01 ", " $ans4 " , @fifthrow)\}
        \{endtable()\}$BR

END_SOLUTION

ANS( num_cmp( $ans1 ) );
ANS( num_cmp( $ans2 ) );
ANS( num_cmp( $ans3 ) );
ANS( num_cmp( $ans4 ) );

ENDDOCUMENT();

