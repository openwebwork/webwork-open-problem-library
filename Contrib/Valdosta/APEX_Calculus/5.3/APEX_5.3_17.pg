#Problem APEX 5.3.17

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

## DBsubject(Calculus - single variable)
## DBchapter(Integrals)
## DBsection(Riemann sums)
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('5.3')
## Problem1('17')

TEXT(beginproblem());


###################################
# Setup

$n = random(10,20,1);
$a = random(2,5,1);
$b = random(2,5,1)*random(-1,1,2);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
$PAR
Evaluate the summation using Theorem 37 (p.213 in APEX Calculus) .
$PAR
\(\displaystyle \sum_{i=1}^{$n} \left( $a i^2 + $b i\right)
=\)\{ans_rule(10)\}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

$ans = $a * $n*($n+1)*(2*$n+1)/6 + $b * $n*($n+1)/2;

ANS(num_cmp($ans));

###################################

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
\[
  \begin{array}{rcl}
    \displaystyle
    \sum_{i=1}^{$n} \left( $a i^2 + $b i\right) &=&
        \displaystyle
    $a\sum_{i=1}^{$n} i^2 + $b \sum_{i=1}^{$n} i \\
    &&\\
     &=& $a\left( \dfrac{$n ($n + 1)(2\cdot $n + 1)}{6} \right) +
     $b \left( \dfrac{$n ($n + 1)}{2} \right)\\
     &&\\
     &=& $ans
  \end{array}
\]
END_SOLUTION
ENDDOCUMENT();    
