#Problem APEX 5.3.12

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

## DBsubject(Calculus - single variable)
## DBchapter(Integrals)
## DBsection(Riemann sums)
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('5.3')
## Problem1('12')

TEXT(beginproblem());


###################################
# Setup

$m = random(3,7,1);
$b = random(4,8,1);

@sum = ($m);
for ($i = 2; $i <= $b; $i++) {
  $next = $i * $m;
  push(@sum, $next);
}

$str_sum = join( '+', @sum);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
$PAR
Write the sum in summation notation, using the given
lower bound.
$PAR
\[
  $str_sum = \sum_{i=1}^{b} a_i
\]
\(b =\)\{ans_rule(5)\}, \(a_i = \)\{ans_rule(10)\}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 1;

$upper = $b;
$term = "$m i";

ANS(num_cmp($upper));
ANS(fun_cmp($term, vars=>['i']));

###################################

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
Each term is 
\[
  $str_sum 
\]
\[
  = $m(1) + $m(2) + $m(3) + \cdots + $m($b)
  = \sum_{i=1}^{$b} $m i
\]
END_SOLUTION
ENDDOCUMENT();    
