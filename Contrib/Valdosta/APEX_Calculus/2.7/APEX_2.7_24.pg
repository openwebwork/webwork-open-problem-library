## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Derivatives of inverse trigonometric functions)
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('2.7')
## Problem1('24')

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$choice1 = random(1,6,1);
if ($choice1 == 1) {
  $f = "\sin";
} elsif($choice1 == 2) {
  $f = "\cos";
} elsif($choice1 == 3) {
  $f = "\tan";
} elsif($choice1 == 4) {
  $f = "\cot";
} elsif($choice1 == 5) {
  $f = "\sec";
} elsif($choice1 == 6) {
  $f = "\csc";
} 
$ans = "1";

BEGIN_TEXT
$PAR
Compute the derivatives of the given function.
$PAR
\( \dfrac{d}{dx}\left[ $f($f^{-1} x) \right] = \)\{ ans_rule(20) \}
$PAR
END_TEXT

ANS( fun_cmp( $ans, vars=>['x'], limits=>[-1,1]) );

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
Since \($f x\) and \($f^{-1} x\) are inverse functions, \( $f($f^{-1} x)
= x\).  The derivative of \(x\) is 1.
END_SOLUTION

ENDDOCUMENT();    

