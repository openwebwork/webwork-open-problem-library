## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Chain rule (with trigonometric functions))
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('2.5')
## Problem1('14')

$showPartialCorrectAnswers = 1;

$b = random(3,8,1);
$c = random(2,5,1);
$bc = $b * $c;
$b1 = $b - 1;

$r = random(1,2,1);

if ($r==1) {
   $f = "\sin^{$b}($c x)";
   $fp = "$bc \sin^{$b1}($c x)\cos($c x)";
   $ans = "$bc sin($c x)^{$b1}*cos($c x)";
   $y = "u^{$b}";
   $yp = "$b u^{$b1}";
   $u = "\sin ($c x)";
   $up = "\cos($c x) \cdot $c";
} else {
   $f = "\cos^{$b}($c x)";
   $fp = "-$bc \cos^{$b1}($c x)\sin($c x)";
   $ans = "-$bc cos($c x)^{$b1}*sin($c x)";
   $y = "u^{$b}";
   $yp = "$b u^{$b1}";
   $u = "\cos ($c x)";
   $up = "-\sin($c x) \cdot $c";
}


TEXT(beginproblem());

BEGIN_TEXT
Compute the derivative of the given function.
$PAR
\[
  f(x) = $f
\]
$PAR
\( f'(x) = \)\{ ans_rule(25) \}.
END_TEXT

ANS( fun_cmp( $ans, vars=>['x'] ));

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
It may help to rewrite \(f(x) = [$u]^{$b}\).
Use the Chain Rule with inside function \(u = $u\)
and outside function \(y = $y\). A second application
of Chain Rule is used to find \( \frac{du}{dx} \).
$PAR
\[
  \begin{array}{rcl}
    f'(x) &=& \displaystyle\frac{dy}{du} \cdot \frac{du}{dx}\\
    &&\\
    &=& ($yp)($up) \\
    &=& $fp
  \end{array}
\]
END_SOLUTION





ENDDOCUMENT();    



