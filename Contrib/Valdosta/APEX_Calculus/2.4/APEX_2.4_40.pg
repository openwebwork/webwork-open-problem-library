#Problem APEX 2.4.40

DOCUMENT();

# Load whatever macros you need for the problem
loadMacros(
  "PG.pl",
  "PGbasicmacros.pl",
  "PGchoicemacros.pl",
  "PGanswermacros.pl",
  "PGauxiliaryFunctions.pl",
  "MathObjects.pl"
);

## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Derivatives of trigonometric functions)
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('2.4')
## Problem1('40')

$showPartialCorrectAnswers = 1;

$a = random(2,9,1);

$r = random(1,2,1);
if ($r==1) {
  $f = "$a \sec x";

  $f1 = "$a \sec x \tan x";
  $ans1 = "$a sec(x) tan(x)";

  $f2_a = "$a\big((\sec x)(\sec^2 x) + (\sec x \tan x)(\tan x)\big)";
  $f2   = "$a(\sec^3 x + \sec x \tan^2 x)";

  $ans2 = "$a(sec(x)^3 + sec(x) * tan(x)^2)";
} else {
  $f = "$a \csc x";

  $f1 = "-$a \csc x \cot x";
  $ans1 = "-$a csc(x) cot(x)";

  $f2_a = "$-a\big( (\csc x)(-\csc^2 x) + (-\csc x \cot x)(\cot x)\big)";

  $f2 = "$a( \csc^3 x + \csc x \cot^2 x)";
  $ans2 = "$a(csc(x)^3 + csc(x) * cot(x)^2)";
}

TEXT(beginproblem());

BEGIN_TEXT
Let \(  f(x) = $f  \).  Find the requested
derivatives.
$PAR
\( f'(x) = \)\{ ans_rule(25) \}
$PAR
\( f''(x) = \)\{ ans_rule(25) \}
END_TEXT

ANS( fun_cmp( $ans1 ));
ANS( fun_cmp( $ans2 ));

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
\[
  \begin{array}{rcl}
   f'(x) &=& $f1 \\
   f''(x) &=& $f2_a \\
   &=& $f2
  \end{array}
\]
END_SOLUTION





ENDDOCUMENT();    



