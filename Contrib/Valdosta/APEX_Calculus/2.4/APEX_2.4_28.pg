## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Product rule (with trigonometric functions))
## Institution('Valdosta State University')
## Author('S. V. Ault')
## TitleText1('APEX Calculus')
## AuthorText1('Hartman')
## EditionText1('3.0')
## Section1('2.4')
## Problem1('28')

$showPartialCorrectAnswers = 1;

$a = random(3,12,1)*random(-1,1,2);
$a1 = $a - 1;

$f = "x^{$a}";
$fp = "$a x^{$a1}";

$g = "e^x";
$gp = "e^x";

$h = "x";
$r = random(1,6,1);
if ($r==1) {
   $h = "\sin x";
   $h_ans = "sin(x)";
   $hp = "\cos x";
   $hp_ans = "cos(x)";
} elsif($r==2) {
   $h = "\cos x";
   $h_ans = "cos(x)";
   $hp = "-\sin x";
   $hp_ans = "-sin(x)";
} elsif($r==3) {
   $h = "\tan x";
   $h_ans = "tan(x)";
   $hp = "\sec^2 x";
   $hp_ans = "(sec(x))^2";
} elsif($r==4) {
   $h = "\cot x";
   $h_ans = "cot(x)";
   $hp = "-\csc^2 x";
   $hp_ans = "-(csc(x))^2";
} elsif($r==5) {
   $h = "\sec x";
   $h_ans = "sec(x)";
   $hp = "\sec x \tan x";
   $hp_ans = "sec(x)*tan(x)";
} else {
   $h = "\csc x";
   $h_ans = "csc(x)";
   $hp = "-\csc x \cot x";
   $hp_ans = "-csc(x)*cot(x)";
}

$ans = "$fp*$g*$h_ans + $f*$gp*$h_ans + $f*$g*$hp_ans";

TEXT(beginproblem());

BEGIN_TEXT
Compute the derivative of the given function.
$PAR
\[
  f(x) = $f $g $h
\]
$PAR
\( f'(x) = \)\{ ans_rule(25) \}.
END_TEXT

ANS( fun_cmp( $ans, vars=>['x'] ));

SOLUTION(EV3(<<'END_SOLUTION'));
$BR$BBOLD Solution:$EBOLD 
$PAR
Use the Product Rule twice.
$PAR
\[
  \begin{array}{rcl}
    f'(x) &=& $f \cdot \frac{d}{dx}[ $g $h]
    + \frac{d}{dx}[ $f ] \cdot ($g $h) \\
    &=& $f\left( $g \frac{d}{dx}[ $h ] + \frac{d}{dx}[$g] $h \right)
        + $fp ($g $h) \\
    &=& $f ($g( $hp) + $gp $h) + $fp $g $h \\
    &=& $f $g( $hp) + $f $gp $h + $fp $g $h \\
  \end{array}
\]
END_SOLUTION





ENDDOCUMENT();    



