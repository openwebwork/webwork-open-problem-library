DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"MathObjects.pl",
"parserPopUp.pl",
);

Context("Numeric");

$mc = new_checkbox_multiple_choice();

@trues = ("\(-B\).", 
"\(B^{-1}AB\).", "\(A^3B\).", "\((AB)^{-1}\).","\(A^TB\).");
@falses = ("\(A+B\).", 
"\(A+2B\).");

@picktrues = shuffle( 5 );
@pickfalses = shuffle( 2 );

$mc->qa( "Let \(A\) and \(B\) be \(n\times n\) orthogonal matrices, with \(n\geq 2\). Which of the following matrices must be orthogonal?", "The matrix \(C\) obtained from \(A\) by switching the first two columns of \(A\).", $trues[$picktrues[0]], $trues[$picktrues[1]]);
$mc->extra("The matrix \(C\) obtained from \(A\) by adding the first column of \(A\) to the second column of \(A\).", "The matrix \(C\) obtained from \(A\) by multiplying the second column of \(A\) by 3.", $falses[$pickfalses[0]]);

TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT

\{ $mc->print_q() \}
\{ $mc->print_a() \}

END_TEXT
Context()->normalStrings;

ANS( checkbox_cmp( $mc->correct_ans() ) );

ENDDOCUMENT();
