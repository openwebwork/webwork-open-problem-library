DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl",
"PGmorematrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a11 = random(-2,2,2);
$a12 = random(-2,2,2);
$a13 = random(-3,3,2);
$a21 = random(-3,3,1);
$a22 = random(-3,3,2);
$a23 = random(-3,3,1);
$a31 = random(-3,3,2);
$a32 = random(-2,2,2);
$a33 = random(-3,3,1);

$det = $a11*$a22*$a33 + $a12*$a23*$a31 + $a13*$a21*$a32 - $a13*$a22*$a31 - $a12*$a21*$a33 - $a11*$a23*$a32; 

BEGIN_TEXT

Let \(A= \{ display_matrix_mm([[$a11, $a12, $a13], [$a21, $a22, $a23], [$a31, $a32, $a33]]) \}\)
$BR
Find the following: 
$BR
(a) \( {\rm det} (A) = \) \{ans_rule(10)\},  
$BR
(b) \{ mbox( '\({\rm adj}(A)=\)', answer_matrix(3,3,10), ',' ) \} 
$BR
(c) \{ mbox( '\(A^{-1}=\)', answer_matrix(3,3,10), '.' ) \}

END_TEXT

$m11 = $a22*$a33 - $a23*$a32;
$m12 = $a21*$a33 - $a23*$a31;
$m13 = $a21*$a32 - $a22*$a31;
$m21 = $a12*$a33 - $a13*$a32;
$m22 = $a11*$a33 - $a13*$a31;
$m23 = $a11*$a32 - $a12*$a31;
$m31 = $a12*$a23 - $a22*$a13;
$m32 = $a11*$a23 - $a13*$a21;
$m33 = $a11*$a22 - $a12*$a21;

ANS(num_cmp($det));

ANS(num_cmp($m11));    ANS(num_cmp(- $m21));  ANS(num_cmp($m31));
ANS(num_cmp(- $m12));  ANS(num_cmp($m22));    ANS(num_cmp(- $m32));
ANS(num_cmp($m13));    ANS(num_cmp(- $m23));  ANS(num_cmp($m33));

ANS(num_cmp($m11/$det));    ANS(num_cmp(- $m21/$det));  ANS(num_cmp($m31/$det));
ANS(num_cmp(- $m12/$det));  ANS(num_cmp($m22/$det));    ANS(num_cmp(- $m32/$det));
ANS(num_cmp($m13/$det));    ANS(num_cmp(- $m23/$det));  ANS(num_cmp($m33/$det));

ENDDOCUMENT();       # This should be the last executable line in the problem.
