DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
"MatrixCheckers.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a = random(-3,3,1);
$b = non_zero_random(-3,3,1);
$c = non_zero_random(-2,2,1);
$d = non_zero_random(-3,3,1);

$k = random(-3,3,1);
$l = non_zero_random(-3,3,1);

$a11 = $k*$a;
$a12 = $k*$b;
$a13 = $k*$c;
$a14 = $k*$d;

$a21 = $l*$a;
$a22 = $l*$b;
$a23 = $l*$c;
$a24 = $l*$d;

$nb = -$b;

$A = Matrix([
[$a11, $a12, $a13, $a14],
[$a21, $a22, $a23, $a24],
]);

$kernel1 = Matrix([[$nb], [$a], [0], [0]]);
$kernel2 = Matrix([[0], [$c], [$nb], [0]]);
$kernel3 = Matrix([[0], [$d], [0], [$nb]]);


$kernel_multians = MultiAnswer($kernel1, $kernel2, $kernel3)->with(
  singleResult => 1,
  separator => ',',
  tex_separator => ',',
  allowBlankAnswers=>0,
  checker => ~~&basis_checker_columns,
);

Context()->texStrings;
BEGIN_TEXT

Let
\[ A = $A. \]
$BR
Find a basis of \(\mbox{Ker} (A)\).
$BR
\(\Bigg\lbrace\)
\{ $kernel_multians->ans_array \},
\{ $kernel_multians->ans_array \},
\{ $kernel_multians->ans_array \}
\(\Bigg\rbrace.\)

END_TEXT
Context()->normalStrings;

ANS( $kernel_multians->cmp() );

ENDDOCUMENT();       # This should be the last executable line in the problem.

