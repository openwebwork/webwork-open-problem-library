DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,4,1);
$b = random(2,4,1);
$sa = random(-1,1,2);
$sb = random(-1,1,2);
$a = $a * $sa;
$b = $b * $sb;

$v2 = random(2,4,1);
$v3 = random(-2,-4,1);
$v1 = - $a*$v2 - $b*$v3;

$v = new Matrix(3,2);
$v->assign(1,1, - $a);
$v->assign(2,1,1);
$v->assign(3,1,0);
$v->assign(1,2,- $b);
$v->assign(2,2,0);
$v->assign(3,2,1);

$C = new Matrix(2,3);
foreach $i (1..2) {
        foreach $j (1..3){
                $C->assign($i, $j, non_zero_random(-2,2,1));
        }
}

$M = new Matrix(3,3);
$M = $v * $C;

$N = new Matrix(3,2);
$N = $M * $v;

$ans1 = $N->element(2,1);
$ans2 = $N->element(2,2);
$ans3 = $N->element(3,1);
$ans4 = $N->element(3,2);

$RIGHT_BRACE = '\}';

BEGIN_TEXT

Let \(V\) be the plane with equation \(x_1 + $a x_2 + $b x_3 =0 \) in \({\mathbb R}^3\).
Find the matrix \(A\) of the linear transformation
\( T(x)= \{display_matrix_mm($M)\} x \) with respect to the basis (of \(V\))
\( \left\{'\{'\} \{display_matrix_mm([[- $a], [1], [0]])\} ,  \{display_matrix_mm([[- $b], [0], [1]])\} 	
   \right${RIGHT_BRACE} \).
$BR
\{ mbox( '\(A=\)', answer_matrix(2,2,10) ) \}

END_TEXT

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));

