DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"MatrixReduce.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');
Context()->parens->set("[" => {formMatrix => 1});

$A = Matrix([
[non_zero_random(-9,9,1),non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
[non_zero_random(-9,9,1),non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
]);

$B = Matrix([
[non_zero_random(-9,9,1),non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
[non_zero_random(-9,9,1),non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
]);

$num = random(2,5,1)*random(-1,1,2);
$m = random(2,5,1)*random(-1,1,2);

# $A = apply_fraction_to_matrix_entries($A);
# $B = apply_fraction_to_matrix_entries($B);

$X = ($A - Compute("$num") * $B)*Compute("1/$m");

Context()->texStrings;
BEGIN_TEXT
Solve for \(X\). 
$BR
$BR
\[ $A  = $m X + $num $B. \]
$BR
\(X=\) \{ $X->ans_array(15) \}
END_TEXT
Context()->normalStrings;

ANS($X->cmp);
COMMENT('MathObject version');
