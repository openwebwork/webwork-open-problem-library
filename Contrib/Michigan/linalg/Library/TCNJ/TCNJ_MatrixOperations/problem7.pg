DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"MatrixReduce.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');
Context()->parens->set("[" => {formMatrix => 1});

do {

do {

$A = Matrix([
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
]);

} until ($A->det != 0);

$A = apply_fraction_to_matrix_entries($A);

$a = $A->element(1,1);
$b = $A->element(1,2);
$c = $A->element(2,1);
$d = $A->element(2,2);

$det = $a * $d - $b * $c;

$Ainv = Matrix([
[$d / $det, - $b / $det],
[- $c / $det, $a / $det],
]);

$B = Matrix([
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
[non_zero_random(-9,9,1),non_zero_random(-9,9,1)],
]);

$Id = Matrix([
[1,0],
[0,1],
]);

# $B = apply_fraction_to_matrix_entries($B);
# $Id = apply_fraction_to_matrix_entries($Id);

$X = ($B - $Id) * ($Ainv);

$Y = $Ainv * ($B - $Id); # common incorrect answer

} until ($X != $Y);

Context()->texStrings;
BEGIN_TEXT
Solve for \(X\). 
$BR
$BR
\[ $B - X $A = I. \]
$BR
\(X=\) \{ $X->ans_array(15) \}
END_TEXT
Context()->normalStrings;

ANS($X->cmp);
COMMENT('MathObject version.  Requires an inverse matrix.');
ENDDOCUMENT();
