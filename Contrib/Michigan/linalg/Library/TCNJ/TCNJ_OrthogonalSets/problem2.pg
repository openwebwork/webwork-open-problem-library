DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Fraction')->parens->set("[" => {formMatrix => 1});
Context()->flags->set(
  tolerance => 0.001,
  tolType => "absolute",
);

do {

$x1 = Fraction(non_zero_random(-7,7,1));
$x2 = Fraction(non_zero_random(-6,6,2));
$x3 = Fraction(non_zero_random(-7,7,1));

$v1 = Fraction(random(-10,10,1));
$v2 = Fraction(random(-9,9,2));
$v3 = Fraction(random(-10,10,1));

} until ($x1 * $v2 != $x2 * $v1);

$vx = $v1 * $x1 + $v2 * $x2 + $v3 * $x3;
$norm2x = $x1 * $x1 + $x2 * $x2 + $x3 * $x3; 
$projvx = $vx/$norm2x; 

$ans1 = $projvx * $x1;
$ans2 = $projvx * $x2;
$ans3 = $projvx * $x3;

$ans = Matrix([$ans1,$ans2,$ans3])->transpose;

Context()->texStrings;
BEGIN_TEXT
Compute the orthogonal projection of 
\(\vec{v}= \{Matrix([[$v1], [$v2], [$v3]])\} \) 
onto the line \(L\) through \(\{Matrix([[$x1], [$x2], [$x3]])\}\) and the origin.
$BR
$BR
\( {\rm proj}_L(\vec{v})= \) \{ $ans->ans_array(15) \}.
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);
COMMENT('MathObject version');
ENDDOCUMENT();