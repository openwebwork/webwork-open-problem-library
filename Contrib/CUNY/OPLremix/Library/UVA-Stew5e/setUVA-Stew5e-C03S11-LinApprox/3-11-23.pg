DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,5,1);
$b = random(2,5,1);
$x1 = random(1,5,1);
$d1 = random(.1,.5,.1);
$d2 = random(.01,.05,.01);
$deriv1 = (($b*($x1**(2) + $a)**($b - 1))*(2*$x1));
TEXT(EV2(<<EOT));
Let \( y = (x^{2} + $a)^{$b}  \). $BR
Find the differential \( dy \)
when \( x= $x1 \) and \( dx = $d1 \)
\{ans_rule(20) \}
$BR
EOT


$ans = $deriv1*$d1;
ANS(num_cmp($ans));
TEXT(EV2(<<EOT));
Find the differential \( dy \)
when \( x= $x1 \) and \( dx = $d2 \)
\{ans_rule(20) \}
EOT

BEGIN_HINT
If \(y=f(x)\), then \(dy=f '(x)dx \).
END_HINT

$ans = $deriv1*$d2;
ANS(num_cmp($ans));
ENDDOCUMENT();        # This should be the last executable line in the problem.