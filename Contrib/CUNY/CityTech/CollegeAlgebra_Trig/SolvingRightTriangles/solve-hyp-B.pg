$gr->lineTo($xmin,$ymin+0.1,"red",2); # right angle
$gr->moveTo($xmin,$ymin);
$gr->lineTo($xmax,$ymin,"black",2); # bottom edge (AB)
$gr->lineTo($xmin,$ymax,"black",2); # hypotenuse (BC)
$gr->lineTo($xmin,$ymin,"black",2); # left edge (AC)

