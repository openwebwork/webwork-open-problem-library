Context()->flags->set(
  reduceConstants=>0, 
  reduceConstantFunctions=>0,
  tolType=>'absolute',
  tolerance=>0.0005
);

$angMin = 15;
$angMax = 39;

$B = random(15,39,2);
$C = 90 - $B;

$BC = random(5,19,1);
$AC = Formula("$BC*sin($B)");
$AB = Formula("$BC*cos($B)");

$ABrad = Real("$BC*cos($B*pi/180)");
$ACrad = Real("$BC*sin($B*pi/180)");

$max = max($AB,$AC);

$xmin = 0;
$ymin = 0;
$xmax = Real("$AB/$max");
$ymax = Real("$AC/$max");
$bufX = (1.3 - $xmax)/2;
$bufY = (1.3 - $ymax)/2;
$xAngPos = -0.15/($angMax-$angMin)*($B-$angMin)+0.3;
$yAngPos = 0.04/($angMax-$angMin)*($B-$angMin)+0.06;

$angleB = "$B~~x{00B0}";
$angleC = "$C~~x{00B0}";

# Problem Graph #
###############

$gr = init_graph(-$bufX,-$bufY,$xmax+$bufX,$ymax+$bufY,size=>[300,300]);
