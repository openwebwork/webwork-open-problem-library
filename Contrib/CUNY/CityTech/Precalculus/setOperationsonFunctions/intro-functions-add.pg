$fTimesg = Formula("($fB*$gA)x^3 + ($fC*$gA+$fB*$gB)x^2 + ($fC*$gB+$fB*$gC)x + $fC*$gC")->reduce;
$fByg = Formula("$f/$g")->reduce;
