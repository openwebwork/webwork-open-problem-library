DOCUMENT();  

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##################################
#  Setup

Context("Numeric");
Context()->variables->are(t=>"Real");
Context()->flags->set(useBaseTenLog=>1); 
Context()->flags->set( tolerance => 0.01, tolType => "absolute");

$b = 10;
$a1 = random(5,8,1);
$a2 = $a1-3;
$Q1 = random(3,5,1);
$Q2 = $a1*$Q1+$a2+1;
#$ans = log(1/3);



#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the following equation for \(y\):
$BR
$BR
\( $a1(10^y+$Q1) = $Q2-$a2(1-10^y) \)
$BR
$BR
\(y = \) \{ ans_rule(20)\}

$BR$BR Enter your answer in the form, "log(number)".
$BR$BR
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute("log(1/3)")->cmp() );



COMMENT('MathObject version.  Uses log = log10.');
ENDDOCUMENT();