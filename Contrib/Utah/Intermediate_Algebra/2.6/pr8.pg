###################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextInequalities.pl",
"PGcourse.pl",
);

TEXT(beginproblem()); 

####################################
#  Setup

Context("Inequalities");
Context()->variables->are(t=>"Real");

$m = random(2000,4000,100);
$b = random(15000,25000,1000);

$domain = Compute("0 <= t <= $b/$m");


######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
The value, \( V \), of a car that is \( t \) 
years old is given by \( V = f(t) = $b - $m t \).
What is the largest domain of \( f(t) \) that make sense in this context? How about range? 
$BR
$BR
Domain: \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
$BR
END_TEXT

$showPartialCorrectAnswers = 1;

ANS($domain->cmp());


Context("Inequalities");
Context()->variables->are(V=>"Real");

$range  = Compute("0 <= V <= $b");

BEGIN_TEXT
Range: $SPACE \{ ans_rule(20) \}
\{ AnswerFormatHelp("inequalities") \}
$BR
$BR
Hint: When using inequalities, check that the variables you use match the ones the question uses.
END_TEXT
Context()->normalStrings;

######################################
#  Answer evaluation

ANS($range->cmp());


;
