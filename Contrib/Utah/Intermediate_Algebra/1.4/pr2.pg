##############################################
#  Setup

Context("Numeric");

@y = (-10,-5,0,5,10);
@perm = shuffle(5);
@inv = invert(@perm);
@gy = @y[@perm];

$i = 2+non_zero_random(-2,2,1);

# avoid fixed points
while ($y[2]==$gy[2] || $y[$i]==$gy[$i]) {
  @perm = shuffle(5);
  @inv = invert(@perm);
  @gy = @y[@perm];
}

$answera = List($y[$perm[2]]);
$answerb = List($y[$perm[$i]]);
$answerc = List($y[$inv[2]]);
$answerd = List($y[$inv[$i]]);

foreach my $i (0..4) {
   $Y[$i] = "$SPACE $y[$i] $SPACE";
  $GY[$i] = "$SPACE $gy[$i] $SPACE";
}

