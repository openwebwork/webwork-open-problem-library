DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Form: (x-a)(x+b)=0  => (x-a2)(a+b2)=ab2

@First = (1,2,3,4,5);   
@Second = (3,4,5,6,7);
@slice = NchooseK(4,2);  #The difference b-a is always 2
@a = @First[@slice];
@b = @Second[@slice];  
$diff = $a[0]*$b[0]-$a[1]*$b[1];

######################################
#  Main text

BEGIN_TEXT
Use factoring to solve the polynomial equation:
 \[  (x - $a[1])(x+$b[1]) = $diff \]
Answer:  \{ ans_rule(30) \}  $BR$BR

If you have two solutions, enter them in the form "x=No 1 or x=No 2".

END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");

$ans = Compute("x = $a[0] or x=-$b[0]")->reduce;
ANS($ans->cmp); 

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
