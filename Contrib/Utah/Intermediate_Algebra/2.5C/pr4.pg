DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "CofIdaho_macros.pl"
);

TEXT(beginproblem());

######################################
#  Setup

@slope = (2,1, 3,1, 4,1, 1,1, 1,2, 1,4, 3,4 ,3,2);
$n = random(0,14,2);
$dy = $slope[$n] * (-1) ** random(1,2,1);
$dx = $slope[$n + 1];
$m = $dy / $dx;

$x1= random(-6,6,1);
$x2 = $x1 + non_zero_random(-2,2,1);
$b = -$m * $x2;
$y1 = $m * $x1 + $b;
 
######################################
#  Main text

BEGIN_TEXT
Find the slope and the equation for the line 
passing through the point  \( ($x1, $y1) \) 
with \(x\)-intercept at \(($x2,0)\).
$PAR
a)  \( m =\)  \{ ans_rule(10) \} 
$PAR
b)  The equation for the line: \{ ans_rule(20) \}
END_TEXT

######################################
#  Answer

Context()->strings->add("Does not exist"=>{},
                        "Not defined"=>{alias=>'Does not exist'}
                       );

$ans_a = Compute($m);
ANS($ans_a->cmp); 

$ans_b = "y=$m*x+$b";
if ($b<0) {$b = -1*$b; $ans_b = "y=$m*x-$b";}
if ($b==0) {$ans_b = "y=$m*x";}
ANS(SlopeIntercept_equation_cmp($ans_b)); 

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
