DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl"
);

TEXT(beginproblem());

######################################
#  Setup

Context("Numeric");

$a1 = random(1,5,1);
$a2 = random(1,6,1);
$b2 = non_zero_random(-6,6,1);

$f = Formula("$a1 + x^2");
$g = Formula("$a2 x + $b2")->reduce;

$input = random(-4,4,1);  

######################################
#  Main text

BEGIN_TEXT
For \( f(x)= \{$f->TeX\} \) and \( g(x)= \{$g->TeX\} \), find:
$PAR
a) \( f(x) \cdot g(x) = \) \{ans_rule(20) \}
$PAR
b) \( f($input) \cdot g($input) = \) \{ans_rule(20) \}
END_TEXT

######################################
#  Answers 

$showPartialCorrectAnswers = 1;

$ans_a = ($f*$g)->reduce;
ANS($ans_a->cmp);

$ans_b = $ans_a->eval(x=>$input);
ANS($ans_b->cmp);

######################################
#  Solution

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$BR
a) \( (f \cdot g)(x) = $ans_a\)
$BR
b) \( (f \cdot g)($input) = $ans_b\)
END_SOLUTION
Context()->normalStrings;

;
ENDDOCUMENT();
