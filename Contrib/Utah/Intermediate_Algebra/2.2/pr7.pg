         $graph -> lb($label1);
         $label2=  new Label(  $a,2.05 , '? ','black',('center','center'));
         $label2->font(GD::Font->Giant);
         $graph -> lb($label2);
         $label3=  new Label( $a,1.05 , '? ','black',('center','center'));
         $label3->font(GD::Font->Giant);
         $graph -> lb($label3);
