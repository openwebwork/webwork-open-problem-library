# DESCRIPTION
# Find the area of a region defined by a parametric curve
# ENDDESCRIPTION

## DBsubject('Calculus - single variable')
## DBchapter('Parametric Equations and Polar Coordinates')
## DBsection('Tangents and Areas')
## KEYWORDS('area','parametric','curve')
## Author('David Protas')
## Institution('CSUN')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");
Context()->variables->add(t=>'Real');
TEXT(beginproblem());

$a = random(1,9,1);
$b = random(1,5,1);
$xFunc = Compute("t^3 + $a t")->reduce;
$yFunc = Compute("$b t - t^2")->reduce;

$ans = "(3/20)*$b^5 + (1/6)*$a*$b^3";

Context()->texStrings;
BEGIN_TEXT
Find the area of the region in the first quadrant that is below the parametric curve
\[ x = $xFunc, \; y = $yFunc . \]
$PAR
Area = \{ ans_rule(35) \}
END_TEXT

Context()->normalStrings;
ANS(Compute($ans)->cmp);

ENDDOCUMENT();
