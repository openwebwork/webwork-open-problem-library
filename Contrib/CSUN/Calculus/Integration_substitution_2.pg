#DESCRIPTION
# Method of substitution
#ENDDESCRIPTION

## DBsubject('Calculus')
## DBchapter('Integrals')
## DBsection('Substitution')
## KEYWORDS( 'integrals','substitution','parameter')
## Author('David Protas')
