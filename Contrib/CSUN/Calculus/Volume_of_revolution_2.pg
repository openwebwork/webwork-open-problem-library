# DESCRIPTION
# Finding the integral for a volume of revolution
# ENDDESCRIPTION

## DBsubject('Calculus - single variable')
## DBchapter('Applications of Integration')
## DBsection('Volumes')
## KEYWORDS('calculus','integral','volume of revolution')
## Author('David Protas')
## Institution('CSUN')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric")->variables->are(x=>"Real", y=>"Real");
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$c = random(1,5);
$cs = $c*$c;
$d = random(2,8,2);
$l = random(1,9,2);

$temp = $d**2-1;
$b = "$c*sqrt($temp)";
$a = "-$b";
$Func = Compute("$cs x^2 - y^2")->reduce;

Context()->texStrings;
BEGIN_TEXT
Let \( R \) be the region bounded by the line \( x = $d \) and the curve \( $Func = $cs \). Find values for \(a\), \(b\), and \(h(y)\) so that
  \[ \int_{a}^{b} h(y)\,dy \]
represents the volume of the solid resulting from revolving \( R \) about the line \( x = -$l \).
$BR$BR
\(a\) = \{ans_rule(8)\} $BR
\(b\) = \{ans_rule(8)\} $BR
\(h(y)\) = \{ans_rule(50)\}
END_TEXT

Context()->normalStrings;
ANS(Compute($a)->cmp);
ANS(Compute($b)->cmp);
ANS(Compute("pi($d + $l)^2 - pi(sqrt((y^2 + $cs)/$cs) + $l)^2")->cmp);

ENDDOCUMENT();
