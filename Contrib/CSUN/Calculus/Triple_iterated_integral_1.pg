# DESCRIPTION
# Finding limits of integration for a triple iterated integral
# ENDDESCRIPTION

## DBsubject('Calculus - multivariable')
## DBchapter('Multiple Integrals')
## DBsection('Triple Integrals')
## KEYWORDS('calculus', 'triple integral', 'iterated')
## Author('David Protas')
## Institution('CSUN')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric")->variables->are(x=>"Real",y=>"Real",z=>"Real");
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = random(1,9);
$c = random(1,9);
$d = $b*$c;
$plane = Compute("x + $b y + $c z")->reduce;

$uy = "($d - x - $c*z)/$b";
$ux = "$d - $c*z";
$uz = "$d/$c";

Context()->texStrings;
BEGIN_TEXT
Find the limits of integration ly, uy, lx, ux, lz, uz (some of which will involve variables \(x, y, z\)) so that
\[ \int_{\textup{lz}}^{\textup{uz}} \int_{\textup{lx}}^{\textup{ux}} \int_{\textup{ly}}^{\textup{uy}} \,dy\,dx\,dz \]
represents the volume of the region in the first octant that is bounded by the 3 coordinate planes and the plane \[$plane = $d.\]   
$BR
ly = \{ans_rule(15)\} $BR
uy = \{ans_rule(15)\} $BR
lx = \{ans_rule(15)\} $BR
ux = \{ans_rule(15)\} $BR
lz = \{ans_rule(15)\} $BR
uz = \{ans_rule(15)\}
END_TEXT

Context()->normalStrings;
ANS(Compute(0)->cmp);
ANS(Compute($uy)->cmp);
ANS(Compute(0)->cmp);
ANS(Compute($ux)->cmp);
ANS(Compute(0)->cmp);
ANS(Compute($uz)->cmp);

ENDDOCUMENT();
