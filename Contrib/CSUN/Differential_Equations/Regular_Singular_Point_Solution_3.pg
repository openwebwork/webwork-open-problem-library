##DESCRIPTION
#  Solutions based at a regular singular point
##ENDDESCRIPTION

## DBsubject('Calculus')
## DBchapter('Second-Order Differential Equations')
## DBsection('Second-Order Linear Equations')
## KEYWORDS('regular singular point')
## Author('David Protas')
## Institution('CSUN')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");
TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-6, 6);

Context()->texStrings;
BEGIN_TEXT

Find the solution of \( x^2y'' + 5xy' + (4 - $a x)y = 0, \,x > 0 \) of the form
\[ y_1 = x^r\sum_{n = 0}^{\infty} c_n x^n, \]
where \(c_0 = 1\). Enter
$BR$BR
\( r = \)  \{ans_rule(15)\} $BR
\( c_n = \)  \{ans_rule(20)\}, \( \,n = 1, 2, 3, \ldots \)

END_TEXT

Context()->normalStrings;
$ans = "($a)^n/(n!)^2";
ANS(num_cmp("-2"));
ANS(fun_cmp($ans, vars=>'n', test_points=>[1,2,3,4,5]));

ENDDOCUMENT();
