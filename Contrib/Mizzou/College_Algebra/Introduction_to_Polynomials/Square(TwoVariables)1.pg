########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "AnswerFormatHelp.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up

Context("LimitedPolynomial-Strict");
Context()->flags->set(singlePowers=>1);
Context()->variables->are(u=>"Real",v=>"Real");

$a = non_zero_random(-10,10,2);
$b = list_random(-9,-8,-7,-6,-5,-4,-3,-2,2,3,4,5,6,7,8,9);
$c1 = $a**2;
$c2 = 2*$a*$b;
$c3 = $b**2;

$expression = "\( ($a u + $b v )^2\)";
$texanswer = "\( $c1 u^2 + $c2 uv + $c3 v^2\)";
$answer = Formula(" $c1 u**2 +$c2 uv+  $c3 v**2")->reduce;

Context()->parens->remove("(","[","{","|");
Context()->{error}{convert} = sub {
    my $message = shift;
    $message =~ s/Unexpected character '~~('/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~)'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~['/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~]'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~{'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~}'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~|'/Absolute value is not allowed/;
    return $message;
};



################################################
#  Main text

BEGIN_TEXT

Expand the expression $expression and combine 
like terms.  Simplify your answer as much as
possible.
$BR
$BR
\{ ans_rule(20) \}
$PAR
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    $texanswer
    $PAR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 
################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();
