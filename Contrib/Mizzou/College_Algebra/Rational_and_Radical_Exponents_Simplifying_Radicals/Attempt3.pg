DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"unionTables.pl",
);
TEXT(beginproblem());

Context("Numeric")->variables->are(a=>"Real",b=>"Real");

$n = random(3,9,1);

#  TeX
$expression = "a^{$n} b^{$n}";

#  MathObjects
$base = Formula("a*b");
$exponent = Formula("$n");

#
#  Display exponents nicely
#
$w1 = 10; # width of 1st answer blank
$w2 = 10; # width of 2nd answer blank
Context()->texStrings;
if ($displayMode eq 'TeX') {
  $showpower =
  "\( \displaystyle $expression = (" . ans_rule($w1) . ")^{" . ans_rule($w2) . "}\)";
} else {
  $showpower =
  ColumnTable(
  "\( \displaystyle \sqrt{  \Big. \hspace{5em} } \) " . ans_rule($w1) . " ",
  ans_rule($w2),
#  indent => 0, separation => 0, valign => 0
  );
}
Context()->normalStrings;


Context()->texStrings;
BEGIN_TEXT
Rewrite the following using a single exponent.
$BR
$BR
$showpower
END_TEXT
Context()->normalStrings;


$showPartialCorrectAnswers = 1;

ANS( $base->cmp() );
ANS( $exponent->cmp() );

ENDDOCUMENT(); 