DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGauxiliaryFunctions.pl",
  "Parser.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl",
  "contextFraction.pl",
  "PeriodicRerandomization.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;

######################################
#  Setup
#  Note: Most of this is to get different denominators
#        and reduces fractions.
Context("Fraction-NoDecimals")->texStrings;
Context()->operators->undefine("+","-","*","^"); 
$ad1 = list_random(2,3,5,7,11);  # Part a: 
$an1 = $ad1 - random(1,$ad1-1,1);
$num = random(-3,-1,1);

@d1 = (3,5,6,9);                 # Part b: 
@d2 = (4,7,8,11);
do {$d = $d1[random(0,3,1)];} while ($ad1==$d);
$n = $d - random(1,$d-1,1);
($bn1,$bd1) = reduce($n,$d);
$d = $d2[random(0,3,1)];
do {
   $n = $d - random(1,$d-1,1);
   ($bn2,$bd2) = reduce($n,$d);} 
while ($bd1==$bd2);

######################################
#  Main text

BEGIN_TEXT
Perform the following operations. If necessary, use fractions not decimals and simplify.
$PAR
(a) $SPACE \( \frac{$an1}{$ad1}\left($num\right) = \) \{ ans_rule(10) \} 

$PAR
(b) $SPACE \( \frac{$bn1}{$bd1}\left(\frac{$bn2}{$bd2}\right) = \) \{ ans_rule(10) \} 

END_TEXT

######################################
#  Answers


$ans_a = Fraction($an1*$num,$ad1);
ANS(Compute($ans_a)->cmp(studentsMustReduceFractions=>1));

$ans_b = Fraction($bn1*$bn2,$bd1*$bd2);
ANS(Compute($ans_b)->cmp(studentsMustReduceFractions=>1));

###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} (a) \($ans_a\), $SPACE (b) \($ans_b\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();