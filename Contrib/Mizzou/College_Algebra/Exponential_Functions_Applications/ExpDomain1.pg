Context("Interval");
$ans = Compute(" R - {$a/$b }" );

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Find the domain of the function \(f(x) = 2^{$exp}\).  Write your answer using 
\{AnswerFormatHelp("interval", "interval notation")\}.
$PAR
$SPACE The domain is \{ans_rule(20)\}.
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS( $ans->cmp() );

