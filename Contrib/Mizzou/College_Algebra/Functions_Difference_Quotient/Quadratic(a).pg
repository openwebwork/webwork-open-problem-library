########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PeriodicRerandomization.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"parserMultiAnswer.pl",
"PGunion.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up
Context()->variables->add( h=>"Real");

$a = random(-1,1,2)*random(2,5,1);
$b = random(-1,1,2)*random(2,5,1);
$c = non_zero_random(-5,5,1);

$f = "$a x^2 + $b x + $c";

$ans1 =  Compute("2*$a x + $a h + $b");
$texanswer = "\(".(2*$a)."x+ $a h + $b\)";
ANS( Compute($ans1)->cmp());

 

Context("Numeric");
################################################
#  Main text
Context()->texStrings;
BEGIN_TEXT
Find the difference quotient for the function \(f(x) = $f\).  Simplify your answer as much as possible.
$PAR
\( \displaystyle\frac{f(x+h) - f(x)}{h} = \)  \{ans_rule(20)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    $texanswer
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();