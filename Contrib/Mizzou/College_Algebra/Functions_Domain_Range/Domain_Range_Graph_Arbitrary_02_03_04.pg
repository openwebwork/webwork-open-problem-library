  ###########################################################################
  if ($attempts_modp == 0 && $actualAttempts != 0) {
      BEGIN_TEXT
      $PAR
      $BBOLD Answer: $EBOLD
      $PAR
      (a) \($domain\)
      $PAR
      (b) \( $range \)
