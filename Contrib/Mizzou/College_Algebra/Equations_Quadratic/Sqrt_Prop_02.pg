# DESCRIPTION
# Solve a quadratic equation x^2 - c = 0 or x^2 = c, where c > 0 (has two distinct solutions) or c < 0 
# (has no solutions).
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter(Equations and Inequalities')
## DBsection('Quadratic Equations')
## KEYWORDS('equations', 'quadratic')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "fracListChecker.pl",
  "MUHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
setFracListFunctions(); # set up context for custom checker
Context()->strings->add("no solution"=>{}, "no solutions"=>{alias=>"no solution"}); 
Context()->{error}{msg}{"You are only allowed to enter fractions, not decimal numbers"} = "You not allowed to enter decimal numbers";
$var = 'x';
Context()->variables->are($var=>"Real", uc($var)=>"Real");

$case1 = random(0,3,1);
if ($case1 <= 2) {
  do {
    $a = list_random(2,3,5,7);
    $b = list_random(2,9);
  } until (gcd($a,$b) == 1);
  $b2 = ($b)**2;
  $case2 = random(0,1,1);
  if ($case2 == 0) {
    $c = $a*$b;
    $eqn = "$var^2 - $c = 0";
    $answer = List(Fraction(-sqrt($c))->reduce, Fraction(sqrt($c))->reduce);
    $da = "\($var = -\sqrt{$c}, \sqrt{$c}\)";
  } else {
    $c = $a*$b2;
    $eqn = "$var^2 = $c";
    $answer = List(Fraction(-$b*sqrt($a))->reduce, Fraction($b*sqrt($a))->reduce);
    $da = "\($var = -$b \sqrt{$a}, $b \sqrt{$a}\)";
  }
} else {
  $a = random(2,6);
  $a2 = ($a)**2;
  $eqn = "$var^2 + $a2 = 0";
  $answer = String("no solution");
  $da = "no solution";
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var\):
$PAR \[$eqn\] $PAR
\($var = \) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp(checkFracList()));


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} $da
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  $BBOLD Help: $EBOLD \{ MUHelp("quadeqns") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Solve a quadratic equation x^2 - c = 0 or x^2 = c, where c > 0 (has two distinct solutions) or c < 0 (has no solutions).');
ENDDOCUMENT();
