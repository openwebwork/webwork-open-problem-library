##DESCRIPTION
##  Solving Quadratic Equations by completing the square
##ENDDESCRIPTION

## KEYWORDS('quadratic', 'equations')

## DBsubject('Algebra') 
## BookTitle('Equations and Inequalities')
## DBchapter('Quadratic Equations') 
## Date('Spring 2012')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## Institution('University of Missouri')
## TitleText1('College Algebra')
## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('3.2')
## Problem1('')


##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"parserMultiAnswer.pl",
"PeriodicRerandomization.pl",
"PGcourse.pl",
"contextFraction.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context()->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('x','y','z','w','p','q','r','s','t','u','v');
$a = random(2,8,1);
do {$b = random(-1,1,2)*random(2,10,1)} until (gcd($a,$b) ==1);
$c = random(2,6,1);

Context("Fraction-NoDecimals");
Context()->{error}{msg}{"You are only allowed to enter fractions, not decimal numbers"} 
= "Enter your answers in exact form";
$case = random(1,2,1);
if($case ==1){
$eqn = "$a $var^2 + $b $var - $c = 0 ";}
elsif($case ==2){
$eqn = "$a $var^2 + $b $var = $c";}
else{
$eqn = "$a $var^2 = $c -  $b $var  ";}



if (sqrt($b**2+4*$a*$c) - floor(sqrt($b**2+4*$a*$c)) == 0) {
   $ans1 = Fraction(-$b + sqrt(($b)**2+4*$a*$c), 2*$a);
   $ans2 = Fraction(-$b - sqrt(($b)**2+4*$a*$c), 2*$a);
} else {
   $texanswer = "\( \dfrac{-$b - \sqrt{".($b**2+4*$a*$c)."}}{".(2*$a)."}, \dfrac{-$b + \sqrt{".($b**2+4*$a*$c)."}}{".(2*$a)."}\)";
   $ans1 = Compute("(-$b + sqrt(($b)**2 + 4*$a*$c))/(2*$a)");
   $ans2 = Compute("(-$b - sqrt(($b)**2 + 4*$a*$c))/(2*$a)");
}
Context()->strings->add("no solution"=>{}, "no solutions"=>{alias=>"no solution"});


$ans = List($ans1,$ans2);
ANS(Compute($ans)->cmp);


##########################################

Context()->texStrings;
BEGIN_TEXT
Solve the following equation for \($var\) by completing the square:
$PAR
\[
$eqn
\]
$PAR
\( $var = \) \{ ans_rule(20) \}
END_TEXT



if ($attempts_modp == 0 && $actualAttempts != 0) {
   if (sqrt($b**2+4*$a*$c) - floor(sqrt($b**2+4*$a*$c)) == 0) {
      BEGIN_TEXT
      $PAR
      $BBOLD Answer: $EBOLD
      \($var = $ans1, $ans2\)
      $PAR
      END_TEXT
   } else {
      BEGIN_TEXT
      $PAR
      $BBOLD Answer: $EBOLD
      $texanswer
      $PAR
      END_TEXT
   }
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} Write your answer in exact form using square roots or radical notation if necessary and separate multiple answers by a comma separated list. Use ${BBOLD}sqrt()${EBOLD} to enter square roots. Write ${BBOLD}no solution${EBOLD} if the equation does not have a solution.
  $BR
  END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


$showPartialCorrectAnswers = 1;

COMMENT('TRASH. REPEAT');
ENDDOCUMENT();