## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('1.2')



DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "PeriodicRerandomization.pl",
  "PGchoicemacros.pl",
  "parserAssignment.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

$showPartialCorrectAnswers = 1;
Context("Fraction-NoDecimals");
$x1 = random(-5,5,1);
do {$x2 = random(-5,5,1)} until ($x2 != $x1);
$y1 = non_zero_random(-5,5,1);
do {$y2 = non_zero_random(-5,5,1)} until ($y2 != $y1);
$m = Fraction($y1 - $y2,$x1 - $x2);
$b = $y1 - $m*$x1;

Context("Numeric")->variables->are(x=>"Real",y=>"Real");
parser::Assignment->Allow;
parser::Assignment->Function("f");

$line = Formula("y = $m x + $b ")->reduce;



Context()->texStrings;
BEGIN_TEXT
Find the equation of the line though the points \( ($x1, $y1) \) and \( ($x2, $y2) \).  Write your answer in the form \(y = mx + b\).
$PAR
\{ ans_rule(20) \}
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(y = $m x + $b\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



ANS( $line->cmp() );

ENDDOCUMENT();
