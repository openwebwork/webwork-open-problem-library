##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGgraphmacros.pl",
  "parserMultiAnswer.pl",
  "unionTables.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("1");

###################################
# Setup

Context("Numeric");
Context()->variables->add(
   y=>"Real",
   z=>"Real",
   w=>"Real",
   u=>"Real",
   v=>"Real",
   p=>"Real",
   q=>"Real",
   r=>"Real",
   k=>"Real",
   m=>"Real",
   n=>"Real",
   A=>"Real",
   B=>"Real",
   C=>"Real",
   D=>"Real",
   S=>"Real",
   T=>"Real",);

$var1 = list_random('A','B','C','D','S','T');
$var2 = list_random('p','q','r','k','m','n');
$var3 = list_random('x','y','z','w','u','v');

$base = random(2,9,1);
do {$a = random(2,100,1)} until (gcd($a, $base) ==1);

$e1 = "\log_{$base}($a)";
$e2 = "\log_{$base}($var1)";
$e3 = "\log{$base}";
$e4 = 3;
$e5 = 4;

$numpos = 5;
@pos = (0..($numpos-1));
@posspos = (0..($numpos-1));
for ($i = 0; $i < $numpos; $i++) {
  $pos[$i] = list_random(@posspos);
  for ($j = 0; $j < scalar(@posspos); $j++) {
    if ($posspos[$j] == $pos[$i] ) {
      $tmp = $posspos[$j];
      $posspos[$j] = $posspos[scalar(@posspos)-1];
      $posspos[scalar(@posspos)-1] = $tmp;
      pop(@posspos);
      $j--;
    }
  }
}

@choices = (0..4);
$choices[$pos[0]] = "\( $e1 + $e2\)";
$choices[$pos[1]] = "\( $e1 \cdot $e2\)";
$choices[$pos[2]] = "\( $e1 - $e2\)";
$choices[$pos[3]] = "\( $a + $e2 \)";
$choices[$pos[4]] = "\( $var1 + $e1 \)";

Context()->strings->add(A=>{}, B=>{}, C=>{}, D=>{}, E=>{}, F=>{}, "none"=>{});
@possans = ("A", "B", "C", "D", "E");
$ans = $possans[$pos[0]];


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Which of the following is equal to \( \log_{$base}($a $var1) \)? 
$PAR
A. $choices[0]
$BR
B. $choices[1] 
$BR
C. $choices[2]
$BR
D. $choices[3]
$BR
E. $choices[4]
$BR
F. none of the above
$PAR
Correct Letter: \{ans_rule(10)\}
END_TEXT
Context()->normalStrings;

###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS( String($ans)->cmp() );

if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus();


COMMENT('MathObject version', 'Features Periodic Rerandomization');
ENDDOCUMENT();
