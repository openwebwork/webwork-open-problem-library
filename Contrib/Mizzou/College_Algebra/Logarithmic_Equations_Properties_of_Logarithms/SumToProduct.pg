##################################
#  Initialization

DOCUMENT();

loadMacros(
   "PGstandard.pl",
   "PGchoicemacros.pl",
   "MathObjects.pl",
   "AnswerFormatHelp.pl",
"PeriodicRerandomization.pl",
"contextFraction.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup
$b = random(2,10);
$m = random(1,3);
$n = random(1,4-$m);
$case = random(0,1,1); 
if ($case == 0) {
  do {
    $a = random(2,9);
    $tmp = log($a*(($b)**($m)))/log($b);
  } until ($tmp != floor($tmp));
  do {
    $c = random(2,9);
    $tmp1 = log($a*$c)/log($b);
    $tmp2 = log($c*(($b)**($n)))/log($b);
  } until ($tmp1 != floor($tmp1) && $tmp2 != floor($tmp2));

  $c1 = $a*$c;
  $c2 = $a*(($b)**($m));
  $c3 = $c*(($b)**($n));
  if ($b != 10) {
    $dispexpn = "\log_{$b}($c1) - \log_{$b}($c2) - \log_{$b}($c3)";
  } else {
    $dispexpn = "\log($c1) - \log($c2) - \log($c3)";
  }
  $ans = -($m+$n);
} else {
  do {
    $a = random(2,9);
    $c = random(2,9);
    $tmp1 = log($a*(($b)**($m)))/log($b);
    $tmp2 = log($a*$b*$c)/log($b);
    $tmp3 = log($c*(($b)**($n)))/log($b);
  } until ($tmp1 != floor($tmp1) && $tmp2 != floor($tmp2) && $tmp3 != floor($tmp3));

  $c1 = $a*(($b)**($m));
  $c2 = $a*$b*$c;
  $c3 = $c*(($b)**($n));
  if ($b != 10) {
    $dispexpn = "\log_{$b}($c1) - \log_{$b}($c2) + \log_{$b}($c3)";
  } else {
    $dispexpn = "\log($c1) - \log($c2) + \log($c3)";
  }
  $ans = $m+$n-1;
}



###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Simplify: \($dispexpn\)
$PAR
Answer: \{ans_rule(20)\}
END_TEXT


###################################
# Answers

ANS( Compute($ans)->cmp() );

$showPartialCorrectAnswers = 0;
###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} 
  \( $ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


COMMENT('MathObject version');
ENDDOCUMENT();