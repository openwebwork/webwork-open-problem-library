# DESCRIPTION
# gives a point on graph of f and then asks for the student to determine a point on graph of f^-1
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection( 'One-to-one Functions and Their Inverses')
## KEYWORDS('functions')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("2");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = random(-15,15);
do {$b = random(-15,15)} until ($b != $a);

$choice = random(0,1,1); 
if ($choice == 0) {
  Context("Point");
  $ans = Compute("($b,$a)");
} else {
  $ans1 = $b;
  $ans2 = $a;
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
if ($choice == 0) {
  BEGIN_TEXT
  Give that the point \( \left($a,$b\right) \) is on the graph of a one-to-one function \(f(x)\), find a point on the graph of \(f^{-1}\).
  $PAR
  Answer: \{ans_rule(20)\}
  END_TEXT
} else {
  BEGIN_TEXT
  If \(f(x)\) is a one-to-one function and \(f\left($a\right) = $b\), then \(f^{-1} \big(\) \{ans_rule(5)\} \( \big) = \) \{ans_rule(5)\}.
  END_TEXT
}


###########################################################################
# check the answer  
###########################################################################
if ($choice == 0) {
  ANS(Compute($ans)->cmp());
} else {
  ANS(Compute($ans1)->cmp());
  ANS(Compute($ans2)->cmp());
}

###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} 
  END_TEXT
  if ($choice == 0) {
    BEGIN_TEXT
    \($ans\)
    END_TEXT
  } else {
    BEGIN_TEXT
    \(f^{-1}\left($b\right) = $a\)
    END_TEXT
  }
  BEGIN_TEXT
  $PAR
  END_TEXT
} else {
  if ($choice == 1) {
    BEGIN_TEXT
    $BR
    END_TEXT
  } else {
    BEGIN_TEXT
    $PAR
    ${BBOLD}Help:${EBOLD} \{AnswerFormatHelp("points", "Click here for help entering points.")\}
    $BR
    END_TEXT
  }
}
Context()->normalStrings;
PeriodicStatus(); 


ENDDOCUMENT();
