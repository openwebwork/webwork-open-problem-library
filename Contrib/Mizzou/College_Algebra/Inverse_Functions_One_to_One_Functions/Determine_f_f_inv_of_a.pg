# DESCRIPTION
# asks the student to determine f(f^-1(a)) or f^-1(f(a))
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection( 'One-to-one Functions and Their Inverses')
## KEYWORDS('functions')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("2");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = random(-1500,1500);

$choice = random(0,1,1); 
if ($choice == 0) {
  $disp = "f^{-1}\left(f\left($a\right)\right)";
} else {
  $disp = "f\left(f^{-1}\left($a\right)\right)";
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Given that \(f(x)\) is a one-to-one function, determine \($disp\).
$PAR
Answer: \{ans_rule(10)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($a)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD}  \($a\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


ENDDOCUMENT();
