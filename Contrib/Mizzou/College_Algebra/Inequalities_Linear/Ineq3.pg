##################################
#  Initialization

DOCUMENT();

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "contextFraction.pl",
   "AnswerFormatHelp.pl",
   "parserMultiAnswer.pl",
   "PeriodicRerandomization.pl",
   "PGcourse.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real" );

$var = list_random('x','y','z','w','u','v','p','q');

$a = random(5,12,1);
$b = random(1,20,1);
$ab = $a + $b;
do {$c = random(2,10)} until (2*$a + $b > $c);
$d = random(1,3,1);
$e = random(2,10,1);

Context("Fraction-NoDecimals");
$endpoint = Fraction($d - $a*$e,$ab + $a - $c);

$case = random(1,4,1);

Context("Interval");
if($case ==1){
   $string = '>';
   $ans = Compute( " ($endpoint,inf) " );}
elsif($case ==2){
   $string = '<';
   $ans = Compute( " (-inf,$endpoint) " );}
elsif($case == 3){
   $string = '\geq';
   $ans = Compute( " [$endpoint,inf) " );}
elsif($case ==4){
   $string = '\leq';
   $ans = Compute( " (-inf,$endpoint] " );}
   
$ineq = "$ab $var + $a( $e + $var) $string  $c $var + $d";

$interval = Compute("[1,2)");
ANS( Compute($ans)->cmp() );


##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
\{ANS_RULE(10)\}


END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  if ($case == 1) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left($endpoint,\infty\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 2) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left(-\infty,$endpoint\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 3) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left[$endpoint,\infty\right)\)
    $PAR
    END_TEXT
  } else {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left(-\infty,$endpoint\right]\)
    $PAR
    END_TEXT
  } 
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();