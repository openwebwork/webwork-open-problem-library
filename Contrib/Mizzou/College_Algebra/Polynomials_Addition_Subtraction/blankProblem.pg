########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "AnswerFormatHelp.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#######################################
#  Set-up

Context("LimitedPolynomial-Strict");
Context()->flags->set(singlePowers=>1);
Context()->variables->are(t=>"Real");

$a1 = non_zero_random(-10,10,1);
$a2 = random(-9,9,2);
$a3 = random(-9,9,1);
$b1 = non_zero_random(-10,10,2);
$b2 = random(-9,9,1);
$b3 = random(-9,9,1);
$c1 = $a1 + $b1;
$c2 = $a2 + $b2;
$c3 = $a3 + $b3;

$expression = "\( ($a1 t^2 + $a2 t + $a3) + ($b1 t^2 + $b2 t + $b3)  \)";

$answer = Formula("$c1 t**2 + $c2 * t + $c3")->reduce;

Context()->parens->remove("(","[","{","|");
Context()->{error}{convert} = sub {
    my $message = shift;
    $message =~ s/Unexpected character '~~('/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~)'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~['/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~]'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~{'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~}'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~|'/Absolute value is not allowed/;
    return $message;
};



################################################
#  Main text

BEGIN_TEXT

Expand the expression $expression and combine 
like terms.  Simplify your answer as much as
possible.
$BR
$BR
\{ ans_rule(20) \}
$PAR $BR

END_TEXT

PeriodicRerandomization("3"); #Problem resets itself after 3 attempts

PeriodicStatus(
 "Generate a new version of this problem",
 "You have ${attempts_modp_remaining} attempt(s) remaining before you will receive a new version of this problem."
 );

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();
