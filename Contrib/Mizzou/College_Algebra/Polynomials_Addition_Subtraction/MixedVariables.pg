########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPolynomial.pl",
  "AnswerFormatHelp.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up

Context("LimitedPolynomial-Strict");
Context()->flags->set(singlePowers=>1);
Context()->variables->are(x=>"Real",y=>"Real");

$a1 = random(2,10,2);
$a2 = random(-1,1,2)*random(2,9,1);
$a3 = random(-1,1,2)*random(2,9,1);
$b1 = random(2,9,1);
$b2 = random(-1,1,2)*random(2,9,1);
$b3 = random(-1,1,2)*random(2,9,1);
$c1 = $a1 + $b1;
$c3 = $a3 + $b3;

$expression = "\(  ($a1 x^2y + $a2 y + $a3) + ($b1 x^2y + $b2 x + $b3) \)";

$answer = Formula("$c1 x^2 y + $a2 y + $b2 x +  $c3 ")->reduce;

Context()->parens->remove("(","[","{","|");
Context()->{error}{convert} = sub {
    my $message = shift;
    $message =~ s/Unexpected character '~~('/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~)'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~['/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~]'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~{'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~}'/Parentheses are not allowed/;
    $message =~ s/Unexpected character '~~|'/Absolute value is not allowed/;
    return $message;
};



################################################
#  Main text
Context()->texStrings;
BEGIN_TEXT

Perform the indicated operation, and simplify.
$PAR
$expression \( = \)  \{ ans_rule(20) \}
END_TEXT



if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($answer\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp());
COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
