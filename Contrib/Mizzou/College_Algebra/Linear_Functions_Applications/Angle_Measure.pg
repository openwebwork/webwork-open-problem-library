# DESCRIPTION
# Asks to find angle measures based on what is given.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Modeling with Functions')
## KEYWORDS('functions', 'algebra, application of linear equations')
## TitleText1('College Algebra')
## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('1.5')
## Problem1('49 50')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "contextCurrency.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
do {
  $times = random(2,5,1);
  $moreless = random(0,1,1);
  $cmoreless = random(2,20,1);
  if ($moreless == 0) {
    $A = (180 + $cmoreless)/(2 + $times);
    $mlstring = "less";
    $C = $A - $cmoreless;
  } else {
    $A = (180 - $cmoreless)/(2 + $times);
    $mlstring = "more";
    $C = $A + $cmoreless;
  }
} until ($A == floor($A));

if ($times == 2) {
  $tstring = "twice";
} elsif ($times == 3) {
  $tstring = "three times";
} elsif ($times == 4) {
  $tstring = "four times";
} else {
  $tstring = "five times";
}
$B = $times*$A;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
In triangle \(ABC\), angle \(B\) is $tstring as large as angle \(A\). The measure of angle \(C\) is \($cmoreless^{\circ}\) $mlstring than that of angle \(A\). Find the measures of the angles.
$PAR
\(A\): \{ans_rule(6)\} degrees
$BR
\(B\): \{ans_rule(6)\} degrees
$BR
\(C\): \{ans_rule(6)\} degrees
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($A)->cmp());
ANS(Compute($B)->cmp());
ANS(Compute($C)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \(A = $A^{\circ}\), \(B = $B^{\circ}\), \(C = $C^{\circ}\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


ENDDOCUMENT();