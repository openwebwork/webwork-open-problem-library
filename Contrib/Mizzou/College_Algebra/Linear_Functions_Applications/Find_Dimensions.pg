# DESCRIPTION
# Asks to find the dimensions of a rectangle from given information.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Modeling with Functions')
## KEYWORDS('functions', 'algebra, application of linear equations')
## TitleText1('College Algebra')
## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('1.5')
## Problem1('51 52 53 54')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "contextCurrency.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$lorw = random(0,1,1);
$times = random(2,8);
if ($lorw == 0) {
  $width = random(4,15,1);
  $length = $times*$width;
  $s1 = "length";
  $s2 = "width";
} else {
  $length = random(4,15,1);
  $width = $times*$length;
  $s2 = "length";
  $s1 = "width";
}

if ($times == 2) {
  $tstring = "twice";
} elsif ($times == 3) {
  $tstring = "three times";
} elsif ($times == 4) {
  $tstring = "four times";
} elsif ($times == 5) {
  $tstring = "five times";
} elsif ($times == 6) {
  $tstring = "six times";
} elsif ($times == 7) {
  $tstring = "seven times";
} else {
  $tstring = "eight times";
}
$perim = 2*$width + 2*$length;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
# I really did mean Eri here...
BEGIN_TEXT
Eri is planting a rectangular garden with a perimeter of \($perim\) feet. The $s1 is $tstring the $s2. Find the dimensions of her garden.
$PAR
Length: \{ans_rule(6)\} ft
$BR
Width: \{ans_rule(6)\} ft
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($length)->cmp());
ANS(Compute($width)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} Length is $length ft, width is $width ft
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


ENDDOCUMENT();