# DESCRIPTION
# Simplify exponents in an expression.
# ENDDESCRIPTION

## DBsubject('Algebra') 
## DBchapter('Basic Algebra')
## DBsection('Exponents and Radicals')
## KEYWORDS('exponents')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
Context()->functions->disable('All');
Context()->parens->remove("|");
Context()->operators->undefine("/");
$var = list_random('a','b','m','n');
$base = list_random('x','y','z');
Context()->variables->are($var=>"Real", $base=>"Real");

$c1 = random(6,10,1);
$c2 = non_zero_random(-10,10,1);
$c3 = random(1,$c1-2,1);
do {$c4 = random(1,10,1)} until (abs($c4) != abs($c2));
$e1 = $c1 - $c3;
$e2 = $c2 + $c4;

$expn = ($c3 == 1) ? "\frac{$base^{$c1 $var + $c2}}{$base^{$var - $c4}}" : "\frac{$base^{$c1 $var + $c2}}{$base^{$c3 $var - $c4}}";
$expn = $expn."= $base^{k}";

$answer = Formula("$e1 $var + $e2")->reduce;
$texanswer = "\($e1 $var + $e2\)";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Rewrite the following using a single exponent, and simplify. If
$PAR \[ $expn \] $PAR
then \(k =\) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} $texanswer
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Simplify exponents in an expression.');
ENDDOCUMENT();