########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PeriodicRerandomization.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;

#######################################
#  Set-up
Context()->variables->add( h=>"Real");
Context()->strings->add("undefined"=>{});

## Coefficients
$a1 = random(2,10,1);
$a2 = random(2,10,1);
$b1 = random(2,5,1);
$b2 = random(2,5,1);
$const = random(2,5,1);
$c1 = random(-1,1,2)*random(2,5,1);
$c2 = random(-1,1,2)*random(2,5,1);
$c3 = random(-1,1,2)*random(2,5,1);

## Test Points
$e1 = random(2,7,1);
do {$e2 = random(-3,3,1)} until ($e1 != $e2);

## Functions
$f = "$c1 x^2 + $c2 x + $c3";
$g1 = "$a1 x + $b1";
$g2 = "$const";
$g3 = "x - $b2";
$fe2 = $c1*($e2)**2 + $c2*$e2 + $c3;

## Answers
$ans1 = $c1*($const)**2 + $c2*$const + $c3;
if($fe2 < 2){
   $ans2 = $a1 *$fe2 + $b1;}
elsif($fe2 >= 8){
   $ans2 = $fe2 - $b2;}
else{
   $ans2 = $const;}

ANS( Compute($ans1)->cmp() );
ANS( Compute($ans2)->cmp() );



$lcb = "\{";
 
Context("Numeric");
################################################
#  Main text

BEGIN_TEXT
Given the functions \(f(x) = \displaystyle $f\) and 
$PAR
\[
g(x) = \left$lcb \begin{array}{lcr}
 $g1 &  & x < 2
\\
 $g2 & & 2 \leq x < 8
\\
$g3 & & x \geq 8

\end{array} \right. 
\]
$PAR find the following values:
$PAR $SPACE \( (f \circ g)($e1) = \) \{ans_rule(10)\}
$BR $SPACE \( (g \circ f)($e2) = \) \{ans_rule(5)\}
$PAR If the quantities do not exist, write "undefined" in the blank provided.
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} 
  \( (f \circ g)($e1) = $ans1\), \( (g \circ f)($e2) = $ans2\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();
