########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PeriodicRerandomization.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"parserMultiAnswer.pl",
"PGunion.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;

#######################################
#  Set-up
Context()->variables->add( h=>"Real");

## Coefficients
$a = random(-1,1,2)*random(2,5,1);
$b = list_random(2,3,5,6,7,8);

## Test Points
$e1 = random(-1,1);

## Functions
$n = random(5,12,1);
$f = "x^{$n}";

## Answers
$ff = Compute(" x^( ($n)**2) ");
$dispff = "x^{".(($n)**2)."}";
$ans = ($e1)**($n);

ANS( Compute($ff)->cmp() );
ANS (Compute($ans)->cmp() );
 
Context("Numeric");
################################################
#  Main text

BEGIN_TEXT
Given the function \(f(x) = $f\), find the following quantities if they exists:
$PAR
$SPACE \( (f \circ f)(x) = \) \{ans_rule(20)\} 
$BR
$SPACE \( (f \circ f)($e1) = \) \{ans_rule(20)\} 
$PAR
If the quantities do not exist, write "undefined" in the blank provided.
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} 
  \((f\circ f) = $dispff\) $BR \((f\circ f)(1) = $ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 
################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();