########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PeriodicRerandomization.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;

#######################################
#  Set-up
Context()->variables->add( h=>"Real");
Context()->strings->add("undefined"=>{});

## Coefficients
$a = random(-1,1,2)*random(2,5,1);
$b = list_random(2,3,5,6,7,8);
$c = random(2,6,1);
$d = random(2,6,1);

## Test Points
#$e1 = random(-2,2,1);

## Functions
$f = "\sqrt{$a x + $b}";
$g = " x^2 + $c x + $d";

## Answers
#$ff = Compute(" sqrt($a sqrt($a x + $b) + $b)  ");
if ($a*$d+$b < 0) {
  $ans = String("undefined");
  $dispans = "undefined";
} else {
  $ans = Compute(" sqrt($a*$d + $b)");
  $dispans = "\( \sqrt{".($a*$d+$b)."}\)";
}

#ANS( Compute($ff)->cmp() );
ANS( $ans->cmp() );

 

Context("Numeric");
################################################
#  Main text

BEGIN_TEXT
Given the functions \(f(x) = $f\) and \(g(x) = $g\), find the following quantity if it exists:
$PAR
$SPACE \( (f \circ g)(0) = \) \{ans_rule(20)\}
$PAR
If the quantity does not exist, write "undefined" in the blank provided.
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} 
  $dispans
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  \{ AnswerFormatHelp("exponents", "Click here for help entering square roots.") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 
################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();
