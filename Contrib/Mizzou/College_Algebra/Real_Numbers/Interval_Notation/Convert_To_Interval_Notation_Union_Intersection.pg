# DESCRIPTION
# Asks to convert given sets notation to interval notation, both union and intersection.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Real Numbers')
## KEYWORDS('interval notation', 'sets')
## Author1('Rick Lynch')
## Author2('David Covert')
## Author3('Teri Christiansen')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Interval");
$a = random(-100,-15,1);
$b = random($a+10,100,1);
$case1 = random(1,4,1);
if ($case1 == 1) {
  $dispineq1 = "x < $a \mbox{ or } x > $b";
  $ans1 = Compute("(-inf,$a)U($b,inf)");
} elsif ($case1 == 2) {
  $dispineq1 = "x \leq $a \mbox{ or } x > $b";
  $ans1 = Compute("(-inf,$a]U($b,inf)");
} elsif ($case1 == 3) {
  $dispineq1 = "x < $a \mbox{ or } x \geq $b";
  $ans1 = Compute("(-inf,$a)U[$b,inf)");
} elsif ($case1 == 4) {
  $dispineq1 = "x \leq $a \mbox{ or } x \geq $b";
  $ans1 = Compute("(-inf,$a]U[$b,inf)");
}

$case2 = random(1,4,1);
if ($case2 == 1) {
  $dispineq2 = "$a < x < $b";
  $ans2 = Compute("($a,$b)");
} elsif ($case2 == 2) {
  $dispineq2 = "$a \leq x < $b";
  $ans2 = Compute("[$a,$b)");
} elsif ($case2 == 3) {
  $dispineq2 = "$a < x \leq $b";
  $ans2 = Compute("($a,$b]");
} elsif ($case2 == 4) {
  $dispineq2 = "$a \leq x \leq $b";
  $ans2 = Compute("[$a,$b]");
}

$showfirst = random(0,1,1);
if ($showfirst == 1) {
  $tmp1 = $dispineq1;
  $tmp2 = $ans1;
  $dispineq1 = $dispineq2;
  $ans1 = $ans2;
  $dispineq2 = $tmp1;
  $ans2 = $tmp2;
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Write in interval notation: 
$PAR
(a) \(${LBRACE} x \mbox{ }|\mbox{ } $dispineq1 ${RBRACE}\): \{ans_rule(20)\}
$PAR
(b) \(${LBRACE} x \mbox{ }|\mbox{ } $dispineq2 ${RBRACE}\): \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans1->cmp());
ANS($ans2->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answers:${EBOLD} 
  $PAR
  (a) \($ans1\)
  $PAR
  (b) \($ans2\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{AnswerFormatHelp("intervals", "Click here for help entering intervals as answers.")\}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Asks to convert given sets notation to interval notation, both union and intersection.');
ENDDOCUMENT();