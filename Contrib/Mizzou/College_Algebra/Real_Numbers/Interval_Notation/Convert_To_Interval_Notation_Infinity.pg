# DESCRIPTION
# Asks to convert given set notation to interval notation, always inf endpt.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Real Numbers')
## KEYWORDS('interval notation', 'sets')
## Author1('Rick Lynch')
## Author2('David Covert')
## Author3('Teri Christiansen')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Interval");
$a = random(-100,100,1);
$case = random(1,4,1);
if ($case == 1) {
  $dispineq = "x < $a";
  $ans = Compute("(-inf,$a)");
} elsif ($case == 2) {
  $dispineq = "x \leq $a";
  $ans = Compute("(-inf,$a]");
} elsif ($case == 3) {
  $dispineq = "x > $a";
  $ans = Compute("($a,inf)");
} elsif ($case == 4) {
  $dispineq = "x \geq $a";
  $ans = Compute("[$a,inf)");
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Write in interval notation: \(${LBRACE} x \mbox{ }|\mbox{ } $dispineq ${RBRACE}\)
$PAR
Answer: \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{AnswerFormatHelp("intervals", "Click here for help entering intervals as answers.")\}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Asks to convert given set notation to interval notation, always inf endpt.');
ENDDOCUMENT();