# DESCRIPTION
# Asks to list all whole/natural numbers in the given set. The numbers in the set are even and less than 
# or less than/equal to a number.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Real Numbers')
## KEYWORDS('real numbers')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$case1 = random(0,1,1); # 0 - whole numbers, 1 - natural numbers
if ($case1 == 0) {
  $str1 = "whole";
} else {
  $str1 = "natural";
}
$case2 = random(0,1,1); # 0 - strict inequality, 1 - not strict
$a = random(7,12);
if ($case2 == 0) {
  $str2 =  "less than";
  $count == 0;
  for ($i = $case1; $i <= $a - 1; $i++) {
    if ($i % 2 == 0) {
      $anslist[$count] = $i;
      $count++;
    }
  }
} else {
  $str2 = "less than or equal to";
  for ($i = $case1; $i <= $a; $i++) {
    if ($i % 2 == 0) {
      $anslist[$count] = $i;
      $count++;
    }
  }
}
$ans = List(@anslist);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
List the elements of the set 
$PAR
\[
$LBRACE x | x \mbox{ is an even $str1 number $str2 $a} $RBRACE.
\]
$PAR
Separate multiple answers by commas.
$PAR
Answer: \{ans_rule(30)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($ans)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Asks to list all whole/natural numbers in the given set. The numbers in the set are even and less than or less than/equal to a number.' );
ENDDOCUMENT();