DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PeriodicRerandomization.pl",
"PGcourse.pl",
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

$showPartialCorrectAnswers = 1;

Context()->variables->add(y=>"Real");

$a = random(-1,1,2)*random(2,10,1);
$b = random(-1,1,2)* random(2,5,1);
$c = random(-1,1,2)*random(1,50,1);


Context("Fraction-NoDecimals");
$m = Fraction(-$a,$b);
ANS( Compute($m) -> cmp(studentsMustReduceFractions=>1) );


$line = " $a x + $b y = $c";


Context()->strings->add("undefined"=>{});

Context()->texStrings;

BEGIN_TEXT
Find the slope of the line \($line\) if it exists or write ${BBOLD}undefined${EBOLD} if the slope is undefined. You must reduce your answer completely.
$PAR
\(m = \) \{ans_rule(10)\}
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(m = $m\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 




ENDDOCUMENT();        # This should be the last executable line in the problem.