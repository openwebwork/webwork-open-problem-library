## DBsubject('Algebra')
## DBchapter()
## DBsection()
## KEYWORDS()
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "contextFraction.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction-NoDecimals");

$r1 = random(2,5,1); 
$r2 = random(2,5,1);
$neg1 = random(-1,1,2);
$neg2 = random(-1,1,2);

if ($r1 == 2) {
  $a1 = random(4,9,1);
} elsif ($r1 == 3) {
  $a1 = random(2,5,1);
} else {
  $a1 = random(2,3,1);
}
$ar1 = ($a1)**$r1;
do {$b1 = random(2,5,1)} until (gcd($b1,$r1) == 1);

$dispa = "\($ar1^{$b1/$r1} =\)";
if ($neg1 == -1 && $r1 % 2 == 0) {
  $dispa = "\(-$ar1^{$b1/$r1} = \)";
} elsif ($neg1 == -1) {
  $dispa = "\(\left(-$ar1\right)^{$b1/$r1} = \)";
}
$ansa = Compute("($neg1*$a1)**$b1")->reduce;

if ($r2 == 2) {
  $a2 = random(4,9,1);
} elsif ($r2 == 3) {
  $a2 = random(2,5,1);
} else {
  $a2 = random(2,3,1);
}
$ar2 = ($a2)**$r2;
do {$b2 = random(2,5,1)} until (gcd($b2,$r2) == 1);

$dispb = "\($ar2^{-$b2/$r2}\)";
if ($neg2 == -1 && $r2 % 2 == 0) {
  $dispb = "\(-$ar2^{-$b2/$r2}\)";
} elsif ($neg2 == -1) {
  $dispb = "\(\left(-$ar2\right)^{-$b2/$r2}\)";
}
$ansb = Compute("($neg2/$a2)**$b2")->reduce;

Context()->operators->undefine("**", "^");
Context()->functions->disable('sqrt');


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Simplify.  Write ${BBOLD}not real${EBOLD} if the answer is not a real number.
$PAR
(a) $dispa \{ans_rule(10)\}
$PAR
(b) $dispb \{ans_rule(10)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ansa->cmp());
ANS($ansb->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} (a) \($ansa\), (b) \($ansb\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();