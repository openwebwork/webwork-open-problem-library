# DESCRIPTION
# Of form x^3 - a x^2 - a^2 x <*> -a^3, where <*> is any type of inequality.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Equations and Inequalities')
## DBsection('Polynomial Inequalities')
## KEYWORDS('polynomial', 'inequality', 'inequalities')
## Author1('Rick Lynch')
## Author2('David Covert')
## Author3('Teri Christiansen')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Interval");
$var = list_random('x', 'y', 'z', 'w', 'u', 'v');
Context()->variables->are(lc($var)=>"Real", uc($var)=>"Real");

$a = list_random(2,3,4,5,10);
$a2 = ($a)**2;
$a3 = $a2*$a;

$case = random(1,4);
if ($case == 1) {
  $str = '<';
  $answer = Interval("($a,$a2)");
} elsif ($case == 2) {
  $str = '\leq';
  $answer = Interval("[$a,$a2]");
} elsif ($case == 3) {
  $str = '>';
  $answer = Interval("(-inf,$a)U($a2,inf)");
} else {
  $str = '\geq';
  $answer = Interval("(-inf,$a]U[$a2,inf)");
}

$c2 = $a+$a2;
$ineq = "$var^2 - $c2 $var + $a3 $str 0";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the following inequality and write your answer using interval notation.
$PAR 
\[ $ineq \]
$PAR
Answer: \{ans_rule(25)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($answer\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{ helpLink("intervals", "Click here for help entering an interval as an answer.") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Of form x^3 - a x^2 - a^2 x <*> -a^3, where <*> is any type of inequality.');
ENDDOCUMENT();