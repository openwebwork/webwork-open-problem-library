# DESCRIPTION
# Of form -a(x-b)(x+c)^2(x-d) <*> 0, where <*> is any type of inequality.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Equations and Inequalities')
## DBsection('Polynomial Inequalities')
## KEYWORDS('polynomial', 'inequality', 'inequalities')
## Author1('Rick Lynch')
## Author2('David Covert')
## Author3('Teri Christiansen')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "fracListChecker.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
setFracListFunctions();
$var = list_random('x', 'y', 'z', 'w', 'u', 'v');
Context()->variables->are(lc($var)=>"Real", uc($var)=>"Real");

$a = random(2,4,1);
$m = random(2,5,1);
$k = random(3,5,1);
$n = $a*$k;
$c1 = $a;
$c2 = $m + $n;
$c3 = -$m*$k;

$case = random(1,4);
$e1 = Fraction(-$k,1)->reduce;
$e2 = Fraction(-$m,$a)->reduce;
if ($case == 1) {
  $str = '<';
  $answer = Interval("($e1,$e2)");
} elsif ($case == 2) {
  $str = '\leq';
  $answer = Interval("[$e1,$e2]");
} elsif ($case == 3) {
  $str = '>';
  $answer = Interval("(-inf,$e1)U($e2,inf)");
} else {
  $str = '\geq';
  $answer = Interval("(-inf,$e1]U[$e2,inf)");
}

$ineq = "$c1 $var^2 + $c2 $var $str $c3";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the following inequality and write your answer using interval notation.
$PAR 
\[ $ineq \]
$PAR
Answer: \{ans_rule(25)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp(checkFracInterval));


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($answer\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{ helpLink("intervals", "Click here for help entering an interval as an answer.") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Of form -a(x-b)(x+c)^2(x-d) <*> 0, where <*> is any type of inequality.');
ENDDOCUMENT();