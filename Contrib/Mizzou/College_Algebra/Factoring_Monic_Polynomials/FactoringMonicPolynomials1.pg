########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$a = random(2,10,1);
$b = random(2,10,1);
$polynomial = Formula("x^2 + ($a + $b)x + $a*$b")->reduce;
$factored = Formula("(x + $a)(x + $b)");

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT


Factor the polynomial:
$PAR
\($polynomial = \) \{ANS_RULE(20)\}
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#

ANS(Compute($factored)->cmp);

ENDDOCUMENT();
