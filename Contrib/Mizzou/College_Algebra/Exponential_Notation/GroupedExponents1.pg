## Problem1('')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "contextLimitedPowers.pl",
  "contextLimitedNumeric.pl",
  "unionTables.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup

Context("Numeric");
Context()->{error}{msg}{"Operands of '*' can't be words"} = " ";

$a = list_random(-5,-4,-3,-2,2,3,4,5);
$b = random(3,5,1);
$c = list_random(-5,-4,-3,-2,2,3,4,5);
$d = random(2,5,1);
$exp1 = random(2,3,1);
$exp2 = random(2,3,1);

Context("Numeric");

Context()->functions->undefine("sin","cos","tan","sqrt");

Context()->functions->disable("abs","sqrt");
Context()->operators->undefine("-","/");
Context()->parens->remove("|");
Context()->{error}{convert} = sub {
 my $message = shift;
 $message =~ s/Unexpected character '~~|'/Absolute value is not allowed/;
 return $message;
};

#  TeX
$expression = "\left($a x^{$b} \right)^{$exp1} \left($c x^{$d} \right)^{$exp2}";

#  MathObjects
$coefficient = Formula("($a)**($exp1)*($c)**($exp2)");
$exponent = Formula("$b*$exp1 + $d*$exp2");

#
#  Display exponents nicely
#
$w1 = 10; # width of 1st answer blank
$w2 = 10; # width of 2nd answer blank
Context()->texStrings;
if ($displayMode eq 'TeX') {
  $showpower =
  "\( \displaystyle $expression = (" . ans_rule($w1) . ")^{" . ans_rule($w2) . "}\)";
} else {
  $showpower =
  ColumnTable(
  "\( \displaystyle $expression = \) " . ans_rule($w1) . " \( x \)",
  ans_rule($w2).$BR.$BR,
  indent => 0, separation => 0, valign => "BOTTOM"
  );
}
Context()->normalStrings;

Context()->texStrings;
BEGIN_TEXT
Rewrite the following using a constant times a power of \(x\).
$BR
$BR
$showpower
END_TEXT

$ansconst = (($a)**($exp1))*(($c)**($exp2));
$ansexp = $b*$exp1 + $d*$exp2;
if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \( $ansconst x^{$ansexp} \)
    $PAR
    END_TEXT
}

Context()->normalStrings;


$showPartialCorrectAnswers = 1;

ANS( $coefficient->cmp() );
ANS( $exponent->cmp() );

COMMENT('TRASH! REPEAT');
ENDDOCUMENT();
