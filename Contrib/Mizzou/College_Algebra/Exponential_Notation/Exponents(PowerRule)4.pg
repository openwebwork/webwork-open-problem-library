# DESCRIPTION
# Rewrite using a single exponent.
# ENDDESCRIPTION

## DBsubject('Algebra') 
## DBchapter('Basic Algebra')
## DBsection('Exponents and Radicals')
## KEYWORDS('exponents')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextLimitedPowers.pl",
  "unionTables.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
Context()->variables->are(a=>"Real", b=>"Real");
LimitedPowers::OnlyPositiveIntegers();
Context()->operators->undefine("+","-","/");

$n = random(2,23);

$expn = "a^{$n} b^{$n}";

$answer1 = Formula("a b");
$answer2 = Formula("$n");
$texanswer = "\((ab)^{$n}\)";

if ($displayMode eq 'TeX') {
  $showpower = "\(\displaystyle $expn = (".ans_rule(10).")^{".ans_rule(10)."}\)";
} else {
  $showpower =
  ColumnTable(
  "\( \displaystyle $expn = \Big( \) ".ans_rule(10)." \( \Big) \)",
  ans_rule(10).$BR.$BR,
  indent => 0, separation => 0, valign => "BOTTOM"
  );
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Write the following using positive exponents only, and simplify.
$PAR
$BCENTER
$showpower
$ECENTER
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer1->cmp());
ANS($answer2->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} $texanswer
  $PAR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Rewrite using a single exponent.');
ENDDOCUMENT();
