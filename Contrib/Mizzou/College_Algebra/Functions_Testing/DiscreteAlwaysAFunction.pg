########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PeriodicRerandomization.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up
Context()->variables->add(
h=>"Real",
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real",
L=>"Real",
F=>"Real",);

$var = list_random('t','s','u','v','p','q','r');

## Coefficients
$a = random(-10,10,1);
do {$b = random(-10,10,1)} until ($b != $a);
do {$c = random(-10,10,1)} until ($c != $a && $c != $b);
do {$d = random(-10,10,1)} until ($d != $a && $d != $b && $d != $c);
do {$e = random(-10,10,1)} until ($e != $a && $e != $b && $e != $c && $e != $d);
$r = random(-5,5,1);
$lcb = "\{";
$rcb = "\}";


## Relation
$relation = "\{($a, $r), ($b, $r), ($c, $r), ($d, $r), ($e, $r) \}";
$domain = List($a, $b, $c, $d, $e);
$range = $r;

Context()->strings->add(
   "Does Not Exist"=>{},
   "Yes"=>{},
   "No"=>{},
);

## Answers
ANS( String("Yes")->cmp() );
ANS( Compute($domain)->cmp() );
ANS( Compute($r)-> cmp() );

 
Context("Numeric");
################################################
#  Main text

BEGIN_TEXT
Consider the relation \($relation\).
$PAR
$SPACE Is this relation a function? \{ans_rule(10)\} $SPACE $SPACE (Write either "Yes" or "No")
$PAR
$SPACE What is the domain of this relation? $SPACE \( \big $lcb \) \{ans_rule(20)\} \( \big$rcb \)
$BR
$SPACE What is the range of this relation? $SPACE \( \big $lcb \) \{ans_rule(20)\} \( \big $rcb \)
$PAR
Write "Does Not Exist" if the quantities do not exist.
END_TEXT

Context()->texStrings;

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    The relation is a function with domain \(${LB} $domain ${RB}\) and range \(${LB}$range ${RB}\).
    $PAR
    END_TEXT
} else {
   BEGIN_TEXT
   $BR
   END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 

################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();
