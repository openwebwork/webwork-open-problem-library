## Institution('University of Missouri')
## TitleText1('College Algebra')
## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('4.6')

##################################
#  Initialization

DOCUMENT();

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "contextFraction.pl",
   "AnswerFormatHelp.pl",
   "parserMultiAnswer.pl",
   "PeriodicRerandomization.pl",
   "PGcourse.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real");

$var = list_random('x','y','z','w','u','v');

$a = random(2,8,1);
$b = random(-1,1,2)*random(2,8,1);
$c = random(2,5,1);
$quant = ($c*$b + $a)/(1 - $c);
while ($quant >= -$b) {
   $b = random(-1,1,2)*random(2,8,1);
   $quant=($c*$b + $a)/(1 - $c);
}

$case = random(1,4,1);

######endpoints
Context("Fraction-NoDecimals");
$end1 = Fraction($c*$b + $a,1 - $c);
$end2 = -$b;

Context("Interval");
if($case == 1){
   $string = '<';
   $string2 = '>';
   $ans = Compute( "(-inf,$end1) U ($end2,inf)" ) ;}
elsif($case ==2){
   $string = '\leq';
   $string2 = '\geq';
   $ans = Compute( "(-inf,$end1] U ($end2,inf)" ) ;}
elsif($case == 3){
   $string = '>';
   $string2 = '<';
   $ans = Compute( "($end1,$end2)" ) ;
}
elsif($case ==4){
   $string = '\geq';
   $string2 = '\leq';
   $ans = Compute( "[$end1,$end2)" ) ;}

ANS( Compute($ans)-> cmp() );

$ineq = " $c $string2 \frac{ $var - $a }{ $var + $b } ";



##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
\{ANS_RULE(10)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  if ($case == 1) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \( \left(-\infty,$end1\right) \cup \left($end2,\infty\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 2) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \( \left(-\infty,$end1\right] \cup \left($end2,\infty\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 3) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \( \left($end1,$end2\right)\)
    $PAR
    END_TEXT
  } else {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \( \left[$end1,$end2\right)\)
    $PAR
    END_TEXT
  } 
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();