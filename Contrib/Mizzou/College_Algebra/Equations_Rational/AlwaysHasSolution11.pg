# DESCRIPTION
# Solve a rational equation (x^2+ab)/((x+a)(x-b)) + x/(b-x) = (x-c)(x+a). One extraneous solution.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter(Equations and Inequalities')
## DBsection('Rational Equations')
## KEYWORDS('equations', 'rational')
## Author1('Rick Lynch')
## Author2('David Covert')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "fracListChecker.pl", # contains custom checker and restricts context
  "MUHelp.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
setFracListFunctions(); # set up context for custom checker
Context()->strings->add("no solutions"=>{}, "infinitely many"=>{}, "no solution"=>{alias=>"no solutions"}, "none"=>{alias=>"no solutions"}, "all reals"=>{alias=>"infinitely many"});
$var = 'x';
Context()->variables->are($var=>"Real", uc($var)=>"Real");

$a = random(-1,1,2)*random(2,5,1);
$b = random(-1,1,2)*random(2,5,1);
$ab = $a*$b;
do {$c = random(-1,1,2)*random(2,5,1)} until ($c != -$a);
$a2 = $a**2;

$eqn = " \frac{ $var^2 + $ab }{$var^2";
if ($a - $b == 1) {
  $eqn = ($eqn)."+ $var - ".($a*$b)."}";
} elsif ($a - $b == -1) {
  $eqn = ($eqn)."- $var - ".($a*$b)."}";
} elsif ($a - $b == 0) {
  $eqn = ($eqn)."-".($a*$b)."}";
} else {
  $eqn = ($eqn)."+".($a-$b)."$var - ".($a*$b)."}";
}

if ($b < 0) {
  $eqn = ($eqn)."- \frac{$var}{".(-$b)." + $var}= \frac{$var - $c}{$var + $a}";
} else {
  $eqn = ($eqn)."+ \frac{$var}{$b - $var}= \frac{$var - $c}{$var + $a}";
}

$answer = List(Fraction($c - $a)->reduce);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var\):
$PAR \[$eqn\] $PAR
\($var = \) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp(checkFracList()));


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($var = $answer\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  $BBOLD Help: $EBOLD \{ MUHelp("rateqns") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Solve a rational equation (x^2+ab)/((x+a)(x-b)) + x/(b-x) = (x-c)(x+a). One extraneous solution.');
ENDDOCUMENT();