########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PeriodicRerandomization.pl",
  "MathObjects.pl",
  "parserImplicitPlane.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up
Context()->variables->add( h=>"Real");

## Coefficients
$a = random(-1,1,2)*random(2,10,1);
$b = random(2,10,1);
$c = random(-1,1,2)*random(2,10,1);
$d = non_zero_random(-10,10,1);
$e = random(-1,1,2)*random(2,5,1);

## Endpoints
$end1 = non_zero_random(-5,5,1);
$end2 = $end1 + random(4,6,1);

## Testpoints
$e1 = $end1;
$e2 = $end1 + random(1,3,1);
$e3 = $end2 + random(2,5,1);

$f1 = "$a x^{-1}";
$f2 = "x^2 + $b";
$f3 = "$c + x";

## Answers
$ans1 = $a/$e1;
$ans2 = ($e2)**2 + $b;
$ans3 = $c + $e3;

ANS( Compute($ans1)->cmp() );
ANS( Compute($ans2)->cmp() );
ANS( Compute($ans3)->cmp() );



$lcb = "\{";
Context("Fraction-NoDecimals");
$ans1frac = Fraction($a,$e1);
################################################
#  Main text

BEGIN_TEXT
Find the following values of the function
$PAR
\[ 
f(x)  = \left$lcb
\begin{array}{lcc}
$f1 & & x \leq $end1
\\
$f2 && $end1 < x \leq $end2
\\
$f3 & & x > $end2
\end{array}
\right.
\]
$PAR
$SPACE \(f($e1) = \) \{ans_rule(10)\} $BR
$SPACE \(f($e2) = \) \{ans_rule(10)\} $BR
$SPACE \(f($e3) = \) \{ans_rule(10)\} 

END_TEXT


Context()->texStrings;

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    $PAR
    \(f($e1) = $ans1frac\)
    $PAR
    \(f($e2) = $ans2\)
    $PAR
    \(f($e3) = $ans3\) 
    $PAR
    END_TEXT
} else {
 BEGIN_TEXT
$BR
 END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version');
ENDDOCUMENT();
