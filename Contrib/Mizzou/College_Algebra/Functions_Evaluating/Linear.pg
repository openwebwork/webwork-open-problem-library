########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PeriodicRerandomization.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PGunion.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up

## Coefficients
$a = random(2,10,1);
do {$b = random(2,10,1)} until (gcd($a,$b) ==1);
do {$c = random(2,10,1)} until (gcd($a,$c) == 1);

## Functions
$f = " $a x^2  + $b x + $c";

## Test points
$e1 = non_zero_random(-3,3,1);
$e2 = non_zero_random(-3,3,1);

$c0 = $a*($e1)**2 + $b*$e1 + $c;

Context("Numeric");
Context()->operators->undefine("*", "/", "+", "-" );
$ans1 = $c0;
Context()->operators->redefine("*","/","+","-");

Context("LimitedPolynomial-Strict")->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real",
L=>"Real",
F=>"Real",);
$var = list_random('t','s','u','v','p','q','r');
$c1 = $a;
$c2 = (2*$a*($e2) + $b);
$c3 = $a*($e2)**2 + $b*$e2 + $c;

$ans2 = Compute("$c1 $var^2 + $c2 $var + $c3")->reduce;

## Answers
ANS( Compute($ans1)->cmp(showTypeWarnings=>0) );
ANS( $ans2-> cmp() );
 
Context("Numeric");
################################################
#  Main text
Context()->texStrings;
BEGIN_TEXT
Given the function \(f(x) = $f\), find the following values and simplify your answers as much as possible.
$PAR
$SPACE \( f($e1) = \) \{ans_rule(10)\} 
$BR
$SPACE \( f($var + $e2) = \) \{ans_rule(10)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    $PAR   
    \(f($e1) = $ans1\)
    $PAR
    \(f($var + $e2) = $ans2\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();
