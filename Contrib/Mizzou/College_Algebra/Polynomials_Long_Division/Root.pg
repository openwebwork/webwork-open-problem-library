########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextLimitedPolynomial.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"PeriodicRerandomization.pl",
"parserRadioButtons.pl",
"contextFraction.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up

Context()-texStrings;


Context("LimitedPolynomial-Strict");
Context()->flags->set(singlePowers=>1);
Context()->variables->add(
   y=>"Real",
   P=>"Real",
   Q=>"Real",
   d=>"Real",
   R=>"Real",
);

$a = random(-1,1,2)*random(2,5,1);
$b = random(-1,1,2)*random(2,5,1);
$k = $b + 1;
$c = random(-1,1,2)*random(2,5,1);
$d = random(-1,1,2)*random(2,5,1);
$m = random(-1,1,2)*random(2,5,1);
$r = random(-1,1,2)*random(10,50,1);

$c5 = $a*$b;
$c4 = $a*$k - ($b)**2;
$c3 = $a*$c - $b*$k;
$c2 = $a*$d - $b*$c;
$c1 = $a*$m - $d*$b;
$c0 = $r - $b*$m;

Context("Fraction-NoDecimals");
$ans = Fraction($b*$d - $c + $a*($d)**3, ($d)**2 );


################################################
#  Main text

BEGIN_TEXT

Find \(k\) such that the Polynomial \(P(x) = $a x^3 + k x^2 + $b x + $c\) is divisible by \( x + $d\).
$PAR
$SPACE \(k = \) \{ans_rule(10)\}
END_TEXT
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($ans\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 




################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute($ans)->cmp() );




COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();