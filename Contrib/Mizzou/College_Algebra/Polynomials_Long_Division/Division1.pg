########################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextLimitedPolynomial.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"PeriodicRerandomization.pl",
"parserRadioButtons.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up

Context()-texStrings;


Context("LimitedPolynomial-Strict");
Context()->flags->set(singlePowers=>1);
Context()->variables->add(
   y=>"Real",
   P=>"Real",
   Q=>"Real",
   d=>"Real",
   R=>"Real",
);

$c1 = random(2,5,1);
$c2 = random(2,5,1);
$c3 = random(2,5,1);
do {$c4 = random(-1,1,2)*random(2,10,1)} until (abs($c2 - $c4) > 1 && abs($c3 - $c4*$c2) > 1 && abs($c1 - $c4*$c3) > 1);

$e1 = $c2 - $c4;
$e2 = $c3 - $c4*$c2;
$e3 = $c1 - $c4*$c3;

$R = Compute("$c1")->reduce;
$Q = Compute("x^2 + $c2 x + $c3")->reduce;
$D = "x - $c4";
$P = "x^3 + $e1 x^2 + $e2 x + $e3 ";





################################################
#  Main text
Context()->texStrings;
BEGIN_TEXT

Given the polynomial \(P(x) = $P\) and divisor \(d(x) = $D\), find the quotient \(Q(x)\) and remainder \(R(x)\).  
$PAR
Write your answer in the form \( P(x) = d(x) Q(x) + R(x)\).
$PAR
$SPACE \($P = ($D) \big( \) \{ans_rule(25)\} \( \big) + \big( \) \{ans_rule(10)\} \( \big) \).
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($P = \left($D\right)\left($Q\right)+$R\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( Compute($Q)->cmp() );
ANS( Compute($c1)->cmp() );




COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();