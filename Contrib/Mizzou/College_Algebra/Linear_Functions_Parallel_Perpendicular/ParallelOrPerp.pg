##DESCRIPTION
##  Lines: Parallel and Perpendicular
##ENDDESCRIPTION

## KEYWORDS('lines', 'slope')

## DBsubject('Algebra') 
## BookTitle('Basic Algebra')
## DBchapter('Lines') 
## Date('Spring 2012')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## Institution('University of Missouri')
## TitleText1('College Algebra')
## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('1.2')



DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
   "contextFraction.pl",
   "AnswerFormatHelp.pl",
   "PeriodicRerandomization.pl",
   "PGcourse.pl",
   "PG.pl",
   "PGbasicmacros.pl",
   "PGchoicemacros.pl",
   "PGanswermacros.pl",
   "parserAssignment.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

$showPartialCorrectAnswers = 1;

$x1 = random(-5,5,1);
do {$x2 = random(-5,5,1)} until ($x2 != $x1);
$y1 = non_zero_random(-5,5,1);
do {$y2 = non_zero_random(-5,5,1)} until ($y2 != $y1);
$m1num = random(-1,1,2)*random(2,5,1);
do {$m1den = random(2,5,1)} until (gcd($m1num, $m1den) == 1);
Context("Fraction-NoDecimals");
$m1 = Fraction($m1num, $m1den);
$b1 = non_zero_random(-10,10,1);

$case = random(1,2,1);
if($case ==1){
   $string = 'parallel';
   $m = $m1;}
else{
   $string = 'perpendicular';
   $m = -1/$m1;}



$b = $y1 - $m*$x1;

Context("Numeric")->variables->are(x=>"Real",y=>"Real");
parser::Assignment->Allow;
parser::Assignment->Function("f");

$line = Formula("y = $m x + $b ");



Context()->texStrings;
BEGIN_TEXT
Find the equation of the line though the point \( ($x1, $y1) \) and $string to the line \(y = $m1 x + $b1  \).  Write your answer in the form \(y = mx + b\)
$PAR
\{ ans_rule(20) \}
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(y = $m x + $b\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



ANS( $line->cmp() );

ENDDOCUMENT();