# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$x=random(-5,5,1);
$y=random(-5,5,1);
$b1 = 4*$x + 11*$y ;
$b2 = $x + 3*$y;

##############################################################
#
#  Text
#
#

Context()->texStrings;

BEGIN_TEXT
Use the substitution method to solve the system

$PAR

\[
\begin{array}{l}
        4x+11y = $b1, \\
        x+3y = $b2. \\
\end{array}
\]
$BR
The solution is:
$BR
\(x=\) \{ans_rule(25) \}
$BR
\(y=\) \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = $x;
$ans2 = $y;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));

ENDDOCUMENT();