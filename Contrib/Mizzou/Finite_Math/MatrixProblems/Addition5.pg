BEGIN_TEXT

If 
\[ A = \left[\begin{array}{ccc}
\{join("& ",@{$a[0]}[0..$#{$a[0]}])\} \cr
\{join("& ",@{$a[1]}[0..$#{$a[1]}])\} \cr
\{join("& ",@{$a[2]}[0..$#{$a[2]}])\} \cr
\end{array}\right]
\mbox{ \ \ and \ \ \ }
B = \left[\begin{array}{ccc}
\{join("& ",@{$b[0]}[0..$#{$b[0]}])\} \cr
\{join("& ",@{$b[1]}[0..$#{$b[1]}])\} \cr
\{join("& ",@{$b[2]}[0..$#{$b[2]}])\} \cr
\end{array}\right],
\]

then

$BCENTER
\{ mbox(
'\( 3A-B = \)',
display_matrix([[ans_rule(5),ans_rule(5),ans_rule(5)],
[ans_rule(5),ans_rule(5),ans_rule(5)],
[ans_rule(5),ans_rule(5),ans_rule(5)]],
'align'=>"ccc"))
\}
$ECENTER
END_TEXT
