##DESCRIPTION
##  Matrix Operations
##ENDDESCRIPTION

##KEYWORDS('linear algebra', 'matrix operations')
 
## DBsubject('Linear Algebra')
## DBchapter('Matrices')
## DBsection('Matrix Operations')
## Date('Spring 2012')
## Author1('David Covert')
## Author2('Jason Aubrey')
## Institution('University of Missouri')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGmatrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$a11 = non_zero_random(-9,9,1);
$a12 = non_zero_random(-9,9,1);
$a21 = non_zero_random(-9,9,1);
$a22 = non_zero_random(-9,9,1);

$b11 = random(-9,9,1);
$b12 = random(-9,9,1);
$b21 = random(-9,9,1);
$b22 = random(-9,9,1);

$k = random(-1,1,2)*random(2,10,1);
$m = random(-1,1,2)*random(2,10,1);
$k1 = random(-1,1,2)*random(2,5,1);
$k2 = random(-1,1,2)*random(2,5,1);

Context("Matrix");
$A = Matrix( [[$a11,$a12],[$a21,$a22]]);
$B = Matrix( [[$b11,$b12],[$b21,$b22]]);
$ans1 = $k*$A;
$ans2 = $A - $m*$B;
$ans3 = $k1*$A - $k2*$B;

$showPartialCorrectAnswers = 1;

############################################
Context()->texStrings;
BEGIN_TEXT
Let \(A\) and \(B\) be the following matrices.
$PAR
\[
A = $A, \qquad B = $B
\]
$PAR
Perform the following operations:
$PAR
\( $k A = \) \{ $ans1->ans_array\}
$PAR
\(A - $m B = \) \{ $ans2->ans_array\}
$PAR
\($k1 A - $k2 B = \) \{ $ans3->ans_array\}


END_TEXT
Context()->normalStrings;
ANS($ans1->cmp);
ANS($ans2->cmp);
ANS($ans3->cmp);


COMMENT('MathObject version');
ENDDOCUMENT();        
