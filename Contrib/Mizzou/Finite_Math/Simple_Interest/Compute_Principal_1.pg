DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "contextCurrency.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   #"PGcourse.pl",      # Customization file for the course
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Currency");

$i = Currency(random(25,100,1));
$r = Real(random(20,30,0.5));
$d = Real(random(50,100,5));
$ans = $i/(($r/100) * ($d/360));

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

An electric company charges \($r $PERCENT \) simple interest on overdue accounts. If a customer is charged \($i\) after \($d\) days for an overdue bill, for what amount was the customerâ€™s original bill?

$PAR
\{ANS_RULE(10)\} 
$BR

($BBOLD Note: $EBOLD Your answers are a dollar amount and should include a dollar sign)


END_TEXT
Context()->normalStrings;


Context()->texStrings;
BEGIN_HINT
Use \(I = Prt\)
END_HINT
Context()->normalStrings;

$dec = Compute($r/100);

Context()->texStrings;
BEGIN_SOLUTION
This is a simple application of \(I = Prt\) with \(I = $i\), \(r = $dec\), and \(t = \frac{$d}{360}\)
END_SOLUTION
Context()->normalStrings;


##############################################################
#
#  Answers
#
#

ANS(Compute($ans)->with(tolerance=>.01)->cmp);
# relative tolerance --3.1412 is incorrect but 3.1413 is correct
# default tolerance is .01 or one percent.



ENDDOCUMENT();        
