DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextCurrency.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$n1 = random(1,3,1);
$n2 = $n1 + random(1,2,1);
$n3 = $n2 + random(1,2,1);
$n4 = $n3 + random(1,2,1);

$a = Real(random(0.10,0.30,0.01));
$b = Real(random(0.10,0.30,0.01));
$c = Real(random(0.10,0.30,0.01));
$d = Real(random(0.10,0.30,0.01));

$ans = $n1*$a + $n2*$b + $n3*$c + $n4*$d;

#
#Note: again, I got little carried away with the spacing and use of the $SPACE feature;
#

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

Find the expected value for the random variable:
$PAR
$BCENTER
\{ begintable(1) \}
\{ row( '$SPACE X $SPACE ' , '$SPACE $SPACE $n1 $SPACE ', '$SPACE $SPACE $n2 $SPACE ', '$SPACE $SPACE $n3 $SPACE', '$SPACE $SPACE $n4 $SPACE' ) \}
\{ row( 'P(X)' ,'$SPACE $a $SPACE', '$SPACE $b $SPACE', '$SPACE$c $SPACE', '$SPACE $d $SPACE') \}
\{ endtable() \}
$ECENTER
$PAR
$SPACE $SPACE \(E(X) = \) \{ANS_RULE(10)\}
END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#
#

ANS(Compute($ans)->cmp);

COMMENT('MathObject version');
ENDDOCUMENT();
