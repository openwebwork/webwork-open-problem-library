## Institution('University of Missouri')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",
   "MathObjects.pl",
);

TEXT(beginproblem());

$interval_length = random(2,7,1);
$starting_point = random(-5,15,1);
$a0 = $starting_point;
$a1 = $a0 + $interval_length;
$a2 = $a1 + $interval_length;
$a3 = $a2 + $interval_length;
$a4 = $a3 + $interval_length;
$a5 = $a4 + $interval_length;
$a6 = $a5 + $interval_length;
$a7 = $a6 + $interval_length;

#midpoints
$m0 = ($a0 + $a1)/2;
$m1 = ($a1 + $a2)/2;
$m2 = ($a2 + $a3)/2;
$m3 = ($a3 + $a4)/2;
$m4 = ($a4 + $a5)/2;
$m5 = ($a5 + $a6)/2;
$m6 = ($a6 + $a7)/2;

#frequencies
$f0 = random(0,2,1);
$f1 = random(0,4,1);
$f2 = random(5,10,1);
$f3 = random(6,10,1);
$f4 = random(5,10,1);
$f5 = random(0,4,1);
$f6 = random(0,2,1);
$total_frequency = $f0 + $f1 + $f2 + $f3 + $f4 + $f5 + $f6;

#midpoints*frequencies
$d0 = $m0*$f0;
$d1 = $m1*$f1;
$d2 = $m2*$f2;
$d3 = $m3*$f3;
$d4 = $m4*$f4;
$d5 = $m5*$f5;
$d6 = $m6*$f6;
$d7 = $d0 + $d1 + $d2 + $d3 + $d4 + $d5 + $d6;

$mean = $d7/$total_frequency;

$stdev = sqrt(   
( 
($mean - $m0)**2 * $f0  + ($mean - $m1)**2 * $f1 + ($mean - $m2)**2 * $f2 + ($mean - $m3)**2 * $f3 + ($mean - $m4)**2 * $f4 + ($mean - $m5)**2 * $f5 + ($mean - $m6)**2 * $f6
)/($total_frequency-1));

$showPartialCorrectAnswers = 1;

############################################
Context()->texStrings;
BEGIN_TEXT
Given the following table, compute the sample mean and sample standard deviation of the following grouped data.
$PAR
$BCENTER

\{ begintable(4) \}
\{ row( "$BCENTER Class $ECENTER", "$BCENTER Midpoint $ECENTER", "$BCENTER Frequency $ECENTER" ) \}
\{ row( "$BCENTER \([$a0,$a1)\) $ECENTER", ANS_RULE(10), "$BCENTER \($f0\) $ECENTER"   ) \}
\{ row( "$BCENTER \([$a1,$a2)\) $ECENTER", ANS_RULE(10), "$BCENTER \($f1\) $ECENTER"   ) \}
\{ row( "$BCENTER \([$a2,$a3)\) $ECENTER", ANS_RULE(10), "$BCENTER \($f2\) $ECENTER"   ) \}
\{ row( "\([$a3,$a4)\)", ANS_RULE(10), "$BCENTER \($f3\) $ECENTER"   ) \}
\{ row( "\([$a4,$a5)\)", ANS_RULE(10), "$BCENTER \($f4\) $ECENTER"   ) \}
\{ row( "\([$a5,$a6)\)", ANS_RULE(10), "$BCENTER \($f5\) $ECENTER"   ) \}
\{ row( "\([$a6,$a7)\)", ANS_RULE(10), "$BCENTER \($f6\) $ECENTER"   ) \}
\{ row(  "$BCENTER Totals  $ECENTER", " ", ANS_RULE(10) ) \}
\{ endtable() \}
$ECENTER
$PAR
$PAR
$SPACE Sample Mean \( = \)  \{ANS_RULE(10)\}
$BR
$SPACE Sample Standard Deviation \( = \) \{ANS_RULE(10)\}


END_TEXT
Context()->normalStrings;

ANS( Compute($m0)->cmp() );
ANS( Compute($m1)->cmp() );
ANS( Compute($m2)->cmp() );
ANS( Compute($m3)->cmp() );
ANS( Compute($m4)->cmp() );
ANS( Compute($m5)->cmp() );
ANS( Compute($m6)->cmp() );

ANS( Compute($total_frequency)->cmp() );
ANS( Compute($mean)->cmp() );
ANS( Compute($stdev)-> cmp(tolerance => .01) );

COMMENT('MathObject version');
ENDDOCUMENT();