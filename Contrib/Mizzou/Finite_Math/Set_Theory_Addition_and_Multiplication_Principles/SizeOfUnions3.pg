##DESCRIPTION
##  Introduction to Set Theory: Inclusion-Exclusion
##ENDDESCRIPTION

##KEYWORDS('set theory', 'union', 'intersection', 'inclusion exclusion')

## DBsubject('Discrete Mathematics')
## DBchapter('Set Theory')
## DBsection('The Inclusion Exclusion Principle')
## Date('Spring 2012')
## Author1('David Covert')
## Author2('Jason Aubrey')
## Institution('University of Missouri')

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric");
$A = random(100,200,1);
$B = random(100,200,1);
$AnB = random(25,75,1);
$AUB = $A + $B - $AnB;
$U = random(450,600,1);
$AUBcomplement = $U - $AUB;
$AnotB = $A - $AnB;
$BnotA = $B - $AnB;
$notA = $U - $A;
$notB = $U - $B;
$AornotB = $A + $notB - $AnotB;
$BornotA = $B + $notA - $BnotA;
$notAornotB = $U - $AnB;

##############################################################
#
#  Text
#

Context()->texStrings;
BEGIN_TEXT
Suppose that \(A\) and \(B\) are sets with 
$PAR
\[
n(A') = $notA, n(B') = $notB, n((A \cup B)') = $AUBcomplement, \text{ and  } n(U) = $U.
\]
$PAR  Find the following:

$PAR
\(n(A) = \)  \{ANS_RULE(10)\}
$PAR
\(n(B) = \) \{ANS_RULE(10)\}
$PAR
\(n(A \cup B) = \) \{ANS_RULE(10)\}
$PAR
\(n(A' \cup B) = \) \{ANS_RULE(10)\}
$PAR
\(n(A \cup B') = \)  \{ANS_RULE(10)\}
$PAR
\(n(A' \cup B') = \) \{ANS_RULE(10)\}
END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#

ANS(Compute($A)->cmp);
ANS(Compute($B)->cmp);
ANS(Compute($AUB)->cmp);
ANS(Compute($BornotA)->cmp);
ANS(Compute($AornotB)->cmp);
ANS(Compute($notAornotB)->cmp);

COMMENT('MathObject version');
ENDDOCUMENT();
