DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

Context("Numeric");
$a = random(150,225,1);
$b = random(60,125,1);
$c = random(15,27,1);

$answer = $a + $b - $c;

##############################################################
#
#  Text
#

Context()->texStrings;
BEGIN_TEXT
A company conducted a marketing survey of college students and found that \($a\) own a bicycle and \($b\) owned a car.  If \($c\) of those surveyed own both a car and a bicycle, how many interviewed have a car or a bicycle?
$PAR
\{ANS_RULE(10)\}
END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#

ANS(Compute($answer)->cmp);

COMMENT('MathObject version');
ENDDOCUMENT();
