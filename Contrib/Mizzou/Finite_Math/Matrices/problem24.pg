DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGmatrixmacros.pl",
  "PGnumericalmacros.pl",
  "PGmorematrixmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-5,5,1);
$b = random(-5,5,1);
$c = random(0,1,0.1);
$c = int($c);

$k = random(-3,3,2);
$l = non_zero_random(-3,3,1);
$m = non_zero_random(-4,4,2);
$n = non_zero_random(-3,3,2);
$p = random(-3,3,1);
$q = random(-3,3,1);
$r = random(-3,3,1);
$s = random(-3,3,2);
$t = random(-2,2,4);

$a13 = $k*$a + $l*$b + $p*$c;

$a23 = $m*$a + $n*$b + $q*$c;

$a33 = $t*$a + $r*$b + $s*$c;

BEGIN_TEXT

\{ mbox( 'Reduce the matrix', display_matrix([[$k, $l, $a13], [$m, $n, $a23], [$t, $r, $a33]]) ) \} 
to reduced row-echelon form. 
$BR
\{ answer_matrix(3,3,10) \} 

END_TEXT

if ($c==0) { 
	$ans1 = $a; 
	$ans2 = $b; 
} else { 
	$ans1 = 0; 
	$ans2 = 0; 
} 

ANS(num_cmp(1));
ANS(num_cmp(0));
ANS(num_cmp($ans1));
ANS(num_cmp(0));
ANS(num_cmp(1));
ANS(num_cmp($ans2));
ANS(num_cmp(0));
ANS(num_cmp(0));
ANS(num_cmp($c));

