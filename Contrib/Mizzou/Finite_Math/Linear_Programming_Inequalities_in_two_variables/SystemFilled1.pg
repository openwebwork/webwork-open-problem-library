DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$m = random(1,5,1);
do {$b = random(2,5,1)} until ($a != $b);
$c = 1;

$graph = init_graph(-6,-6,6,6,'axes'=>[0,0],'grid'=>[12,12]);

$f1 = FEQ("(-$m x + $b) for x in <-6,6>  using color:black and weight:2");
$f1Ref = plot_functions($graph,$f1);
$graph->fillRegion([0,0,'green']);

$l = "<";

Context()->variables->add(y=>"Real");
$ans = " y + $m x";
$ineq = PopUp(["?", "≤", "<", "≥", ">"], "≤");



BEGIN_TEXT

\{ image(insertGraph($graph),height=>200,width=>200) \} 
$PAR
Write a formula for the inequality graphed above in the form 
$BR $BCENTER 

\(a x + b y \) "inequality sign" \(c\)

$ECENTER $BR where "inequality sign" will be one of the values \(<, >, \leq\), or \(\geq\).
$PAR
\{ans_rule(20)\} \{$ineq->menu() \} \{ans_rule(10)\}




END_TEXT

Context()->normalStrings;

ANS( Compute($ans)->cmp() ) ;
ANS( $ineq->cmp() );
ANS( Compute ($b)-> cmp() );
ENDDOCUMENT();
