"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,2,1);
$b=random(2,3,1);
$c = 7-$a-$b;

BEGIN_TEXT
Standard automobile license plates in a country display $a numbers,
followed by $b letters, followed by $c numbers.
How many different standard plates are possible in this system?
(Assume repetition of letters and numbers is allowed, and that there are 26 letters in the alphabet.)
$BR
Your answer is : \{ans_rule(25) \}
$BR
END_TEXT

$ans = 10**$a*26**$b*10**$c;
ANS(num_cmp($ans));

