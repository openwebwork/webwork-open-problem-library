loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers=1;

$a =random(1,6);
$b =random(2,8);
$c = random(1,7);
$d= random(1,5);

BEGIN_TEXT
$BR
(a) If the odds for A are $a to $b, what is the probability of A? $BR
Answer: \{ ans_rule(10) \}
$BR
(b) If the odds against B are $c do $d what is the probability of B? $BR
Answer: \{ ans_rule(10) \}

END_TEXT

ANS(num_cmp( $a/($a+$b) ) );
ANS(num_cmp( $d/($c+$d) ) );

