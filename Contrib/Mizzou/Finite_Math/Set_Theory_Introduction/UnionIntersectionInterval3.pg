##DESCRIPTION
##  Introduction to Set Theory
##ENDDESCRIPTION

##KEYWORDS('set theory', 'union', 'intersection')

## DBsubject('Discrete Mathematics')
## DBchapter('Set Theory')
## DBsection('Basic Operations')
## Date('Spring 2012')
## Author1('David Covert')
## Author2('Jason Aubrey')
## Institution('University of Missouri')

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 0;

##############################################################
#
#  Setup
#
#

Context("Numeric");

$case = random(1,6,1);
$a1 = random(-25,25,1);
$a2 = random(75,100,1);
$b1 = $a1 + random(5,45,1);
$b2 = $a2 + random(10,25,1);

Context("Interval");

if($case == 1){
$A = Compute("(-inf,$a2]");
$B = Compute("(-inf,$b2)");
$answerUnion = Compute("(-inf,$b2)");
$answerInt = Compute("(-inf,$a2]");
$string = "A' \cap B";
$answer3 = Compute("($a2,$b2)");}

elsif($case == 2){
$A = Compute("(-inf,$a2]");
$B = Compute("($b1,inf)");
$answerUnion = Compute("(-inf,inf)");
$answerInt = Compute("($b1,$a2]");
$string = "A' \cap B";
$answer3 = Compute("{ }");}

elsif($case == 3){
$A = Compute("(-inf,$a2]");
$B = Compute("($a1,$a2)");
$answerUnion = Compute("(-inf,$a2]");
$answerInt = Compute("($a1,$a2)");
$string = "A \cap B' ";
$answer3 = Compute("(-inf,$a1]U{$a2}");}

elsif($case == 4){
$A = Compute("[$a2,$b2)");
$B = Compute("($a1,$a2]");
$answerUnion = Compute("($a1,$b2)");
$answerInt = Compute("{$a2}");
$string = "A \cap B' ";
$answer3 = Compute("($a2,$b2)");}

elsif($case == 5){
$A = Compute("($a1,$a2]");
$B = Compute("[$b1,$b2)");
$answerUnion = Compute("($a1,$b2)");
$answerInt = Compute("[$b1,$a2]");
$string = "(A \cup B)' ";
$answer3 = Compute("(-inf,$a2] U [$b2,inf) ");}

elsif($case == 6){
$A = Compute("[$a1,$b1]");
$B = Compute("[$a2,$b2)");
$answerUnion = Compute("[$a1,$b1] U[$a2,$b2) ");
$answerInt = Compute("{ }");
$string = "A' \cap B' ";
$answer3 = Compute(" (-inf,$a1) U ($b1,$a2) U [$b2,inf) ");}

##############################################################
#
#  Text
#

Context()->texStrings;
BEGIN_TEXT
Let \(A = $A\) and \(B = $B\).  Compute:
$PAR
\(A \cap B = \) \{ANS_RULE(20)\}
$PAR
\(A \cup B = \) \{ANS_RULE(20)\}
$PAR
\($string = \) \{ANS_RULE(20)\}
$PAR
(${BBOLD}Note: $EBOLD write your answers using \{ helpLink('interval notation')\}).
END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#

ANS(Compute($answerInt)->cmp);
ANS(Compute($answerUnion)->cmp);
ANS(Compute($answer3)->cmp);

COMMENT('MathObject version');
ENDDOCUMENT();
