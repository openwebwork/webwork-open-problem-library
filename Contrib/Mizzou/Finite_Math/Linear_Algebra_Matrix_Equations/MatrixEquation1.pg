##DESCRIPTION
##  Solving Matrix Equations: Inverse Methods
##ENDDESCRIPTION

##KEYWORDS('linear algebra', 'matrix equation')
 
## DBsubject('Linear Algebra')
## DBchapter('Matrices')
## DBsection('Matrix Operations')
## Date('Spring 2012')
## Author1('David Covert')
## Author2('Jason Aubrey')
## Institution('University of Missouri')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PG.pl",
   "PGbasicmacros.pl",
   "MathObjects.pl",
   "PGmatrixmacros.pl"
);

TEXT(beginproblem());

$a11 = non_zero_random(-9,9,1);
$a12 = non_zero_random(-9,9,1);
$a21 = random(-9,9,1);
do {$a22 = random(-3,3,1)} until ($a11*$a22 != $$a12*$a21);

$x1 = random(-5,5,1);
$x2 = random(-5,5,1);

$xone = '$x_1';
$xtwo = '$x_2';

Context("Matrix");
$A = Matrix( [[$a11,$a12],[$a21,$a22]] );
$X = Matrix( [[$x1], [$x2]] );
$b = $A*$X;

$ans1 = $a11*$x1 + $a12*$x2;
$ans2 = $a21*$x1 + $a22*$x2;

$showPartialCorrectAnswers = 1;

############################################
Context()->texStrings;
BEGIN_TEXT
Solve the matrix equation \(Ax = b\), where
$PAR
\[
A = $A, \quad x = 
\left[
\begin{array}{cc}
 x_1 \\ x_2
\end{array}
\right]
\text{ and } \quad b = $b.
\]
$PAR
The solution is:
$PAR
\(x_1 = \) \{ANS_RULE(5)\}
$BR
\(x_2 = \) \{ANS_RULE(5)\}


END_TEXT
Context()->normalStrings;
ANS(Compute($x1)->cmp);
ANS(Compute($x2)->cmp);


COMMENT('MathObject version');
ENDDOCUMENT();        