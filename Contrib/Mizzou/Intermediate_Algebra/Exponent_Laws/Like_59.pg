# DESCRIPTION
# Basic exponent laws
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Exponents and Radicals')
## KEYWORDS('exponents')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGunion.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@vars1 = ("x","y","z");
@vars2 = ("a","b","c");
$var1 = $vars1[random(0,2,1)];
$var2 = $vars2[random(0,2,1)];
Context()->variables->are($var1=>"Real", $var2=>"Real");
$a = random(2,6,1);
$b = random(2,5,1);
$c = non_zero_random(-8,8,1);
$exp = $a*$b;
$ans1 = Formula("$var1")->reduce;
$ans2 = Formula("$exp $var2 - $c")->reduce;
$expression = "\frac{$var1^{$a $var2} \left($var1^{$a $var2}\right)^{$b}}{$var1^{$a $var2 + $c}}";



###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;


BEGIN_TEXT
Rewrite the following using a single exponent, and simplify. If
$PAR
\[
$expression = $var1^m
\]
$PAR
then \(m =\) \{ans_rule(20)\}
$BR
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans2->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \({$ans2}\)
  $PAR
  END_TEXT
} 
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
