# DESCRIPTION
# Asks three random questions pertaining to a zero exponent
# ENDDESCRIPTION

## DBsubject('Intermediate Algebra')
## DBchapter('Ch 06: Rational Expressions, Functions and Equations')
## DBsection('Rational Expressions and Functions: Multipying and Dividing')
## KEYWORDS('rational', 'expressions', 'exponents')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextLimitedPowers.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = random(2,9);
$c = random(2,9);
do {$d = random(1,9)} until ($d != $c);
$e = random(2,9);
do {$f = random(1,9)} until ($f != $e);

$c11 = random(0,4,2);
do {$c12 = random(0,4,2)} until ($c12 != $c11);
do {$c13 = random(0,4,2)} until ($c13 != $c11 && $c13 != $c12);
$c1 = random(0,1,1);
$c2 = random(0,1,1);
$c3 = random(0,1,1);
@questions = ("-$a x^0", "\left(-$a x\right)^0", "\left($c x + $d\right)^0", "\left($c x - $d\right)^0", "$e x^0 + $f", "$e x^0 - $f");
@answers = (-$a, 1, 1, 1, $e+$f, $e - $f);
$q1 = $questions[$c11+$c1];
$q2 = $questions[$c12+$c2];
$q3 = $questions[$c13+$c3];
$ans1 = $answers[$c11+$c1];
$ans2 = $answers[$c12+$c2];
$ans3 = $answers[$c13+$c3];


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Evaluate each expression:
$PAR
(a) \($q1 = \) \{ans_rule(15)\}
$PAR
(b) \($q2 = \) \{ans_rule(15)\}
$PAR
(c) \($q3 = \) \{ans_rule(15)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
Context("Numeric")->operators->undefine("*","+","-");
LimitedPowers::OnlyPositiveIntegers();
ANS(Compute($ans1)->cmp());
ANS(Compute($ans2)->cmp());
ANS(Compute($ans3)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} (a) \($ans1\), (b) \($ans2\), (c) \($ans3\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
