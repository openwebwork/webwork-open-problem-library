DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "PGnauGraphics.pl",
  "contextInequalitiesAllowStrings.pl",
  "answerHints.pl",
  "CofIdaho_macros.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

######################################
#  Setup

@slice = NchooseK(12,9);
@A = ($slice[1], $slice[2], $slice[3], $slice[4]);
@B = ($slice[5], $slice[6], $slice[8]);
$AiB = "N";
@AuB = ($slice[1], $slice[2], $slice[3], $slice[4], $slice[5], $slice[6],$slice[8]);

for ($k=3; $k>0; $k-=1) {
  for ($i=0; $i<$k; $i+=1){
    if($A[$i]>$A[$k]) {
       $b = $A[$i];
       $A[$i] = $A[$k];
       $A[$k] = $b;
    }
  }
}

for ($k=2; $k>0; $k-=1) {
  for ($i=0; $i<$k; $i+=1){
    if($B[$i]>$B[$k]) {
       $b = $B[$i];
       $B[$i] = $B[$k];
       $B[$k] = $b;
    }
  }
}

@AuB =();
@AiB = ();
$num = random(7,16,1);
for ($i = 0; $i < random(10,50); $i++) {
  $caseeo = random(1,2,1);
  $caseAorB = random(0,2,1);
}
@words = ("even", "odd");
$word = $words[$caseeo%2];
$LEFT_BRACE = '\{';
$RIGHT_BRACE = '\}';
if ($caseAorB == 0) {
  $dispA = " A= ${LEFT_BRACE} $A[0],  $A[1], $A[2], $A[3] ${RIGHT_BRACE}";
  $dispB = " B = ${LBRACE} x | x \mbox{ is an $word natural number less than } $num ${RBRACE} ";
  $count = 0;
  for ($i = 0+$caseeo; $i < $num; $i=$i+2) {
    for ($j = 0; $j < scalar(@A); $j++) {
      if ($A[$j] == $i) {
        push(@AiB,$i);
      }
      $eos[$count] = $i;
      $count++;
    }
  }
  $ans_a = Set(@AiB);
  @AuB = (@eos,@A);
  $ans_b = Set(@AuB);
} elsif ($caseAorB == 1)  {
  $dispB = " B= ${LEFT_BRACE} $B[0],  $B[1],  $B[2] ${RIGHT_BRACE}";
  $dispA = " A = ${LBRACE} x | x \mbox{ is an $word natural number less than } $num ${RBRACE} ";
  $count = 0;
  for ($i = 0+$caseeo; $i < $num; $i=$i+2) {
    for ($j = 0; $j < scalar(@B); $j++) {
      if ($B[$j] == $i) {
        push(@AiB,$i);
      }
      $eos[$count] = $i;
      $count++;
    }
  }
  $ans_a = Set(@AiB);
  @AuB = (@eos,@B);
  $ans_b = Set(@AuB);
} else {
  $dispA = " A= ${LEFT_BRACE} $A[0],  $A[1], $A[2], $A[3] ${RIGHT_BRACE}";
  $dispB = " B= ${LEFT_BRACE} $B[0],  $B[1],  $B[2] ${RIGHT_BRACE}";
  for ($i = 0; $i < scalar(@A); $i++ ) {
    for ($j = 0; $j < scalar(@B); $j++) {
      if ($A[$i] == $B[$j]) {
        push(@AiB, $A[$i]);
      }
    }
  }
  @AuB = (@A,@B);
  $ans_a = Set(@AiB);
  $ans_b = Set(@AuB);
}

 
######################################
#  Main text

Context()->strings->add(empty=>{});
BEGIN_TEXT
Given the sets 
$PAR
\[
$dispA \quad \mbox{and} \quad $dispB
\]
$PAR
find the following sets and write the answer using set notation. Separate multiple elements by commas. Write ${BBOLD}empty${EBOLD} if the set contains no elements.
$PAR
(a) \( A \cap B = \) \{ans_rule(25)\} 
$PAR
(b) \( A \cup B = \) \{ans_rule(25)\} 
END_TEXT

######################################
#  Answer

Context()->parens->replace('{' => {close => '}', type => 'Set'});

if (scalar(@AiB) == 0) {
  ANS(String("empty")->cmp());
  $ans_a = "\mbox{empty}";
} else {
  ANS($ans_a->cmp());
}

ANS($ans_b->cmp());


$showPartialCorrectAnswers = 1;

###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} (a) \($ans_a\), $SPACE (b) \($ans_b\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
