##DESCRIPTION
## Compound Inequalities
## 
##ENDDESCRIPTION
## DBsubject('Intermediate Algebra')
## DBchapter('Ch 04: Inequalities and Problem Solving')
## DBsection('Compound Inequalities')
## KEYWORDS('inequalities')
## TitleText1('Essentials of Intermediate Algebra')
## EditionText1('1')
## AuthorText1('Blitzer')
## Section1('4.2')
## Problem1('')
## Author('RA Cruz')
## Institution('The College of Idaho')
## Date: 2007/10

DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
"AnswerFormatHelp.pl",
"PeriodicRerandomization.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

######################################
#  Setup
#This is an (-infinity,infinity) problem:
Context("Interval")->strings->add("no solutions"=>{}, "no solution"=>{alias=>{"no solutions"}});
do {
$a = random(-5,4,1);
$b = $a + random(1,9,1);
$c = non_zero_random(-5,5,1);
$d = random(1,5,1);
$n = random(3,4,1);
$m = random(3,4,1);
$e = $n * $a + $c;
$f = 1 - $m;
$g = $m * $b - $d;
$endpt1 = ($e-$c)/$n;
$endpt2 = ($g+$d)/(1-$f);
} until ($endpt1 != $endpt2 && $e != 0 && $f != 0 && $g != 0);

@inequal = ("$n x + $c > $e","x - $d \leq $g + $f x" );
@slice = NchooseK(2,2);
for ($i = 0; $i < random(10,50); $i++) {
  $case = random(0,1,1);
} 
$word = ($case == 0) ? "and" : "or";
if ($case == 0) {
  $num1 = ($e - $c)/gcd($e-$c,$n);
  $den1 = $n/gcd($e-$c,$n);
  $num2 = ($g+$d)/gcd($g+$d,1-$f);
  $den2 = (1-$f)/gcd($g+$d,1-$f);
  if ($endpt2 > $endpt1) {
    $ans = Compute("($endpt1, $endpt2]");
    Context()->texStrings;
    $dispans = "\($ans\)";
  } else {
    $ans = String("no solutions");
    $dispans = "no solutions";
  }
} else {
  $ans = Compute("(-inf,inf)");
  Context()->texStrings;
  $dispans = "\($ans\)";
}

 
######################################
#  Main text

BEGIN_TEXT
Solve the following inequality. Write your answer in interval notation or if no solutions exist write ${BBOLD}no solutions${EBOLD}. $PAR
\[ $inequal[$slice[0]] \quad \mbox{ $word } \quad $inequal[$slice[1]] \] $PAR
Answer:  \{ ans_rule(20) \}
END_TEXT

######################################
#  Answer

ANS($ans->cmp(tolerance=>0.00000001, tolType=>'absolute'));		

$showPartialCorrectAnswers = 1;

Context()->texStrings;
###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} $dispans
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{AnswerFormatHelp("intervals", "Click here for help entering intervals as answers.")\}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus();

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();