# DESCRIPTION
# Asks to expand a polynomial having 3 linear factors
# ENDDESCRIPTION

## DBsubject('Intermediate Algebra')
## DBchapter('Ch 05: Polynomials, Polynomial Functions, and Factoring')
## DBsection('Introduction to Polynomials and Polynomial Functions')
## KEYWORDS('polynomials')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedPolynomial-Strict");
for ($i = 0; $i < random(20,45); $i++) { # more random??
  $case = random(0,1,1);
  $ch1 = random(0,4,2);
  $ch2 = random(0,1,1);
}
$a = non_zero_random(-9,9);
@vars = ("x","y","a","b","u","v");
$var1 = $vars[$ch1];
$var2 = $vars[$ch1+1];
Context()->variables->are($var1=>"Real", $var2=>"Real");

if ($case == 0) {
  if ($a < 0) {
    if ($ch2 == 0) {
      $dp = "($var1 + $var2)($var1 - $var2)($var1^2 - $var2^2)";
      $ans = Formula("$var1^4 - 2$var1^2 $var2^2 + $var2^4");
    } else {
      $dp = "($var1 + $var2)($var1 - $var2)($var1^2 + $var2^2)";
      $ans = Formula("$var1^4  - $var2^4");
    }
  } else {
    if ($ch2 == 0) {
      $dp = "($var1 - $var2)($var1 + $var2)($var1^2 - $var2^2)";
      $ans = Formula("$var1^4 - 2$var1^2 $var2^2 + $var2^4");
    } else {
      $dp = "($var1 - $var2)($var1 + $var2)($var1^2 + $var2^2)";
      $ans = Formula("$var1^4  - $var2^4");
    }
  }
} else {
  $e = ($a)**2;
  $e1 = 2*($a)**2; 
  $e2 = ($a)**4;
  if ($a < 0) {
    if ($ch2 == 0) {
      $dp = "($var1 + $a)($var1 - $a)($var1^2 - $e)";
      $ans = Formula("$var1^4 - $e1 $var1^2  + $e2");
    } else {
      $dp = "($var1 + $a)($var1 -$a)($var1^2 + $e)";
      $ans = Formula("$var1^4  - $e2");
    }
  } else {
    if ($ch2 == 0) {
      $dp = "($var1 - $a)($var1 + $a)($var1^2 - $e)";
      $ans = Formula("$var1^4 - $e1 $var1^2  + $e2");
    } else {
      $dp = "($var1 - $a)($var1 + $a)($var1^2 + $e)";
      $ans = Formula("$var1^4  - $e2");
    }
  }
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Multiply and simplify:
$PAR
\($dp = \) \{ans_rule(25)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
