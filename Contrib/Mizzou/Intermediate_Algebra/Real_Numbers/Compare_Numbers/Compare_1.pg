# DESCRIPTION
# Asks to determine if the numbers are <, >, or =
# ENDDESCRIPTION

## DBsubject('Intermediate Algebra')
## DBchapter('Ch 01: Algebra, Mathematical Models, and Problem Solving')
## DBsection('Operations with Real Numbers and Simplifying Algebraic Expressions')
## KEYWORDS('real numbers')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "parserPopUp.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$n1 = random(-25,-10,1);
do {$n2 = random(-25,-10,1)} until ($n2 != $n1);
if ($n1 < $n2) {
  $pu1 = PopUp(["select", "<", "=", ">"], "<");
  $dispans1 = "\(<\)";
} else {
  $pu1 = PopUp(["select", "<", "=", ">"], ">");
  $dispans1 = "\(>\)";
}

$den1 = random(3,19,2);
do {$num11 = random(2,19,1)} until (gcd($num11,$den1) == 1);
do {$num12 = random(2,19,1)} until (gcd($num12,$den1) == 1 && $num12 != $num11);
$n3 = $num11/$den1;
$n4 = $num12/$den1;
if ($n3 < $n4) {
  $pu2 = PopUp(["select", "<", "=", ">"], "<");
  $dispans2 = "\(<\)";
} else {
  $pu2 = PopUp(["select", "<", "=", ">"], ">");
  $dispans2 = "\(>\)";
}
$dispn3 = "\frac{$num11}{$den1}";
$dispn4 = "\frac{$num12}{$den1}";

$den21 = random(3,19,2);
do {$den22 = random(3,19,2)} until ($den22 != $den21);
do {$num21 = random(2,19,1)} until (gcd($num21,$den21) == 1);
do {$num22 = random(2,19,1)} until (gcd($num22,$den22) == 1);
$n5 = $num21/$den21;
$n6 = $num22/$den22;
if ($n5 < $n6) {
  $pu3 = PopUp(["select", "<", "=", ">"], "<");
  $dispans3 = "\(<\)";
} elsif ($n5 > $n6) {
  $pu3 = PopUp(["select", "<", "=", ">"], ">");
  $dispans3 = "\(>\)";
} else {
  $pu3 = PopUp(["select", "<", "=", ">"], "=");
  $dispans3 = "\(=\)";
}
$dispn5 = "\frac{$num21}{$den21}";
$dispn6 = "\frac{$num22}{$den22}";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Determine the correct symbol that goes between each pair of numbers to form a true statement:
$PAR
(a) \($n1\) \{$pu1->menu()\} \($n2\)
$PAR
(b) \($dispn3\) \{$pu2->menu()\} \($dispn4\)
$PAR
(c) \($dispn5\) \{$pu3->menu()\} \($dispn6\)
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($pu1->cmp());
ANS($pu2->cmp());
ANS($pu3->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} 
  $PAR
  (a) \($n1\)  $dispans1 \($n2\)
  $PAR
  (b) \($dispn3\) $dispans2 \($dispn4\)
  $PAR
  (c) \($dispn5\) $dispans3 \($dispn6\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();