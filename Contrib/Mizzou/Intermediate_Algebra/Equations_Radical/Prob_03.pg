# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter()
## DBsection()
## KEYWORDS()
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "AnswerFormatHelp.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction-NoDecimals");
Context()->strings->add("no solution"=>{});

do {
  $p = non_zero_random(-9,9);
  $q = non_zero_random(-9,9);
  $a = non_zero_random(-9,9);
  $b = 2*$a - $p - $q;
  $c = ($a)**2 - $p*$q;
} until (abs($p) != abs($q) && (($b > 0 && $c != 0) || ($c > 0 && $b < 0)));

$tmp = -$a;
if ($b > 0) {
  $disp = "x - \sqrt{$b x + $c} = $tmp";
  if ($b == 1) {
    $disp = "x - \sqrt{ x + $c} = $tmp";
  }
} elsif ($b < 0) {
  $disp = "x - \sqrt{$c + $b x} = $tmp";
  if ($b == -1) {
    $disp = "x - \sqrt{$c - x} = $tmp";
  }
}

@ans = ();
$ap = $b*(-$p)+$c;
$aq = $b*(-$q)+$c;

if ($ap >= 0) {
  if (-$p + $a == sqrt($ap)) {
    push(@ans,-$p);
  }
}

if ($aq >= 0) {
  if (-$q + $a == sqrt($aq)) {
    push(@ans,-$q);
  }
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the following equation for \(x\):
$PAR
\[
$disp
\]
$PAR
\(x = \) \{ans_rule(15)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
if (scalar(@ans) > 0) {
  $ans = List(@ans);
  ANS($ans->cmp());
  $dans = "\(x = $ans\)";
} else {
  ANS(String("no solution")->cmp());
  $dans = "no solution";
}


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} $dans
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Note:$EBOLD Write your answer in exact form using square roots or radical notation if necessary. \{ AnswerFormatHelp("exponents", "Click here for help writing square roots.")\} If there is more than one correct answer, enter your answers as a comma separated list.  If the equation has no real solution, write "No Solution."
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
