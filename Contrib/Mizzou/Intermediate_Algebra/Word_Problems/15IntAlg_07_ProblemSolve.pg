DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextCurrency.pl",
  "parserImplicitPlane.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

######################################
#  Setup

$a = random(10,30,5);
$answer = random(600,1300,10);
$b = $answer*(1-$a/100);

Context(Currency);
$price = Currency($b);
$string = "ddd.cc";

######################################
#  Main text

BEGIN_TEXT
After a $a$PERCENT reduction, you purchase a television for $DOLLAR$b.
What was the television's price before the reduction?
$PAR
(a) Write an equation to model the problem.  Let \(x \)
represent the price before the reduction.
$PAR
Answer: \{ans_rule(20) \}
$PAR
$BR
(b) Solve the equation to find the price before the reduction. (Note: Your answer should be in the form $BITALIC $DOLLAR$string.$EITALIC)
$PAR
Answer: \{ans_rule(20) \}
END_TEXT

######################################
#  Answers
#  Note:  This should been to be changed whenever an Equation
#         MathObject is written or a better equation checker is written.

$p = $a/100;
Context("ImplicitPlane");
$ans_a = ImplicitPlane("x - $p * x = $b");
ANS($ans_a->cmp());

Context("Currency");
$ans_b = Currency($answer);
ANS($ans_b->cmp);

$showPartialCorrectAnswers = 1;

Context()->texStrings;
###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} (a) \(x - $p x = $b\), $SPACE (b) \($ans_b\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
