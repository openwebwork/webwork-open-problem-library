# DESCRIPTION
# Gives the length of 3 sides of a triangle as algebraic expressions and a perimeter
# asks to solve for x
# ENDDESCRIPTION

## DBsubject('Intermediate Algebra')
## DBchapter('Ch 01: Algebra, Mathematical Models and Problem Solving')
## DBsection('Algebra, Mathematical Models, and Problem Solving')
## KEYWORDS('problem solving', 'linear', 'equations')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "contextFraction.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction-NoDecimals");

$a1 = random(2,7,1);
$a2 = random(2,7,1);
$b2 = random(2,7,1);
$a3 = random(2,7,1);
$b3 = random(2,7,1);

$perim = random(50,176,2);
$ans = Fraction($perim - $b2 - $b3,$a1 + $a2 + $a3);

$var = list_random("x","y","z");
Context()->variables->are($var=>"Real");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
The sides of a triangle have lengths \( $a1 $var \), \($a2 $var + $b2\), and \($a3 $var + $b3\). If the perimeter of the triangle is \($perim\), what is the value of \($var\)?
$PAR
\($var = \) \{ans_rule(15)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($ans)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT(); 