##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"contextFraction.pl",
"AnswerFormatHelp.pl",
"PeriodicRerandomization.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup

Context("Fraction-NoDecimals");

$case = random(1,2,1);
$a = random(2,7,1);
$b = random(1,2,1);

$b4 = 4 * $b;


if($case ==1){
$var = "d";
$eqn = "$a d - \frac{1}{2} \left( 2d - $b4 \right) = - \frac{5}{4} \left( d + $b4 \right)";
$num = -28 * $b;
$den = 4*$a + 1;}
else{
$var = "x";
$eqn = "$a x = \frac{1}{2} \left( 2x - $b4 \right)  - \frac{5}{4} \left( x + $b4 \right)";
$num = -28 * $b;
$den = 4*$a + 1;}

$answer = Fraction($num,$den);


###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var\):
$PAR
\[
$eqn
\]
$PAR
\( $var = \)
\{ ans_rule(20) \}
END_TEXT

Context()->strings->add("no solutions"=>{}, "infinitely many"=>{}, "no solution"=>{alias=>"no solutions"}, "none"=>{alias=>"no solutions"}, "all reals"=>{alias=>"infinitely many"});
if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($var = $answer\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $PAR
    ${BBOLD}Note:${EBOLD} Write ${BBOLD}no solutions${EBOLD} if no solutions exist or ${BBOLD}infinitely many${EBOLD} if there are infinitely many solutions. 
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



###################################
# Answers

$showPartialCorrectAnswers = 1;

ANS($answer->cmp(studentsMustReduceFractions=>1) );


COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();