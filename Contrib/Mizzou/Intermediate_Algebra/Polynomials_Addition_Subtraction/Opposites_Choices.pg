# DESCRIPTION
# Asks to find the opposite of a linear polynomial
# ENDDESCRIPTION

## DBsubject('Intermediate Algebra')
## DBchapter('Ch 05: Polynomials, Polynomial Functions, and Factoring')
## DBsection('Introduction to Polynomials and Polynomial Functions')
## KEYWORDS('polynomials', 'addition', 'subtraction')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$c[0] = random(0,3,1);
do {$c[1] = random(0,3,1)} until ($c[1] != $c[0]);
do {$c[2] = random(0,3,1)} until ($c[2] != $c[0] && $c[2] != $c[1]);
do {$c[3] = random(0,3,1)} until ($c[3] != $c[0] && $c[3] != $c[1] && $c[3] != $c[2]);
Context()->strings->add(A=>{}, B=>{}, C=>{}, D=>{});
@ansc = ("A","B","C","D");
$a = random(2,15)*random(-1,1,2);
$b = non_zero_random(-15,15);

@ans = ();
if ($c[0] == 0 || $c[0] == 2) {
  push(@ans,"A");
}
if ($c[1] == 0 || $c[1] == 2) {
  push(@ans,"B");
}
if ($c[2] == 0 || $c[2] == 2) {
  push(@ans,"C");
}
if ($c[3] == 0 || $c[3] == 2) {
  push(@ans,"D");
}
$ans = List(@ans);

Context()->texStrings;
if ($a < 0) {
  @choices = ("-($a x + $b)", "$a x - $b", abs($a)."x - $b",  abs($a)."x + $b");
} else {
  @choices = ("-($a x + $b)", "$a x - $b", "-$a x - $b", "-$a x + $b");
}


###########################################################################
# state the problem 
###########################################################################
BEGIN_TEXT
Which of the following is equal to the opposite of \($a x + $b\)?  
$PAR
A. $SPACE \($choices[$c[0]]\)
$PAR 
B. $SPACE \($choices[$c[1]]\)
$PAR
C. $SPACE \($choices[$c[2]]\)
$PAR
D. $SPACE \($choices[$c[3]]\)
$PAR
Answer(s): \{ans_rule(15)\}  (Type one or more letters corresponding to your answer(s), separating multiple answers with commas.)
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($ans)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
