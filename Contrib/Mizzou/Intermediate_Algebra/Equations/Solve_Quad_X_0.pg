# DESCRIPTION
# Asks to solve an equation where one of the factors is the variable and the other is a quadratic
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Equations and Inequalities')
## DBsection('Other Equations')
## KEYWORDS('grouping','factoring','equations')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@vars = ("x","y","z","s","r","t","a","b","c");
$ch = random(0,8,1);
$v = $vars[$ch];

do {
  $a = random(2,3)*random(-1,1,2);
  $p = non_zero_random(-6,6);
  do {$q = non_zero_random(-6,6)} until ($q != $p);
  $b = $a*($p+$q);
  $c = $a*$p*$q;
} until ($b != 0 && $c != 0);

$case = random(0,1,1);
if ($case == 0) {
  $e1 = -$c;
  $disp = "$a $v^3 + $b $v^2 = $e1 $v";
} else {
  $e1 = -$b;
  $e2 = -$c;
  if ($e1 > 0) {
    $disp = "$a $v^3 = $e2 $v - $b $v^2";
  } else {
    $disp = "$a $v^3 = $e1 $v^2 +$e2 $v";
  }
}

$ans = List(0,-$p,-$q);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($v\):
$PAR
\[
$disp
\]
$PAR
\($v = \) \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($v = $ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} Separate multiple answers by a comma separated list.
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();