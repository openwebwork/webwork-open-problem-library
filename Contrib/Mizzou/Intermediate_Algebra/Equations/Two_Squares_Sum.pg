# DESCRIPTION
# Asks to solve of the form x^2+(x+p)^2=k
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Equations and Inequalities')
## DBsection('Other Equations')
## KEYWORDS('grouping','factoring','equations')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@vars = ("x","y","z","s","r","t","a","b","c");
$ch = random(0,8,1);
$v = $vars[$ch];

$n1 = non_zero_random(-6,6);
do {$n2 = non_zero_random(-6,6)} until (abs($n2) != abs($n1));
$k = ($n1+$n2)**2 - 2*$n1*$n2; # = n1^2 + n2^2
$p = $n1+$n2;

$disp = "$v^2 + ($v + $p)^2 = $k";
$ans = List(-$n1,-$n2);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($v\):
$PAR
\[
$disp
\]
$PAR
\($v = \) \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($v = $ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} Separate multiple answers by a comma separated list.
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
