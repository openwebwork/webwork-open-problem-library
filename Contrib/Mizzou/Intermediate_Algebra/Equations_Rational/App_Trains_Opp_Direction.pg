# DESCRIPTION
# Asks to solve the given word problem
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Equations and Inequalities')
## DBsection('Modeling with Equations')
## KEYWORDS('rational','applications','equations')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = random(20,50,5);
$b = $a + random(5,35,5);
$c = $b - $a;
$t = random(4,9);
$d = $t*($a+$b);
$case = random(0,1,1);

$word = ($case == 0) ? "slower" : "faster";
$ans = List($a,$b);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Two trains going in opposite directions leave the same station at the same time. One train travels \($c\) mph $word than the other. In \($t\) hours the trains are \($d\) miles apart. Find the speed of each train.
$PAR
Speed of the slower train: \{ans_rule(15)\} mph
$BR
Speed of the faster train: \{ans_rule(15)\} mph
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute("$a")->cmp());
ANS(Compute("$b")->cmp());

###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($a\) mph and \($b\) mph
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();