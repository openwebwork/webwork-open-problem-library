# DESCRIPTION
# Asks to solve the given word problem
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Equations and Inequalities')
## DBsection('Modeling with Equations')
## KEYWORDS('rational','applications','equations')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = random(2,7);
$b = max(10, $a + random(5,15));
$c = $b - $a;
$word = ($a < 5) ? "walker" : "jogger";
$t = random(2,6);
$da = $a*$t;
$db = $b*$t;
$choice = random(0,1,1);
$answord = ($choice == 1) ? $word : "bicyclist";
$ans = ($choice == 1) ? $a : $b;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
The speed of a bicyclist is \($c\) mph faster than the speed of a $word. If the bicyclist travels \($db\) miles in the same amount of time that the $word travels \($da\) miles, find the speed of the $answord.
$PAR
Answer: \{ans_rule(15)\} mph
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute("$ans")->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans\) mph
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();