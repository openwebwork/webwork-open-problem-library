# DESCRIPTION
# Solve for the given variable
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Equations and Inequalities')
## DBsection('Other Equations')
## KEYWORDS('equations','rational')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@vars = ("x", "y", "z", "a", "b", "c", "p", "q", "r", "s", "t",  "v", "w", "m", "n", "k");
$size = scalar(@vars);
for ($i = 1; $i < $size; $i++) {
  Context()->variables->add($vars[$i]=>"Real", uc($vars[$i])=>"Real");
}
Context()->variables->add(uc("x")=>"Real");
$ch[0] = random(0,$size-1,1);
do {$ch[1] = random(0,$size-1,1)} until ($ch[1] != $ch[0]);
do {$ch[2] = random(0,$size-1,1)} until ($ch[2] != $ch[0] && $ch[2] != $ch[1]);
$v[0] = $vars[$ch[0]];
$v[1] = $vars[$ch[1]];
$v[2] = $vars[$ch[2]];

$pch = random(0,1,1);
if ($pch == 0) {
  $dispeqn = "$v[0] = \frac{$v[1]$v[2]}{$v[1] + $v[2]}";

  $choice = random(1,2);
  $vc = $v[$choice];

  if ($choice == 1) {
    $ans = Formula("$v[0] $v[2]/($v[2] - $v[0])")->reduce;
  } else { 
    $ans = Formula("$v[0] $v[1]/($v[1] - $v[0])")->reduce;
  }
} else {
  do {$ch[3] = random(0,$size-1,1)} until ($ch[3] != $ch[0] && $ch[3] != $ch[1] && $ch[3] != $ch[2]);
  $v[3] = $vars[$ch[3]];
  $dispeqn = "$v[0] = \frac{$v[1]}{$v[2]+$v[3]}";

  $choice = 3;random(2,3);
  $vc = $v[$choice];

  if ($choice == 2) {
    $ans = Formula("($v[1] - $v[0] $v[3])/$v[0]")->reduce;
  } else {
    $ans = Formula("($v[1] - $v[0] $v[2])/$v[0]")->reduce;
  }
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the following equation for \($vc\):
$PAR
\[
$dispeqn
\]
$PAR
\($vc = \) \{ans_rule(25)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \(\displaystyle $vc = $ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
