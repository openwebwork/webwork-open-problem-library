##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context()->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('x','y','z','w','p','q','r','s','t','u','v');

$a = random(-1,1,2)*random(2,5,1);
$b = random(-1,1,2)*random(2,5,1);
$ab = $a*$b;
do {$c = random(-1,1,2)*random(2,5,1)} until (abs($c-$a) != abs($b));
$a2 = $a**2;



$ans = Compute(" $c - $a ") ;
ANS(Compute($ans) -> cmp() );

#$eqn = " \frac{ $var^2 + $ab }{($var + $a)($var - $b)}  + \frac{$var}{$b - $var}= \frac{$var - $c}{$var + $a}";

$eqn = " \frac{ $var^2 + $ab }{$var^2";
if ($a - $b == 1) {
  $eqn = ($eqn)."+ $var - ".($a*$b)."}";
} elsif ($a - $b == -1) {
  $eqn = ($eqn)."- $var - ".($a*$b)."}";
} elsif ($a - $b == 0) {
  $eqn = ($eqn)."-".($a*$b)."}";
} else {
  $eqn = ($eqn)."+".($a-$b)."$var - ".($a*$b)."}";
}

if ($b < 0) {
  $eqn = ($eqn)."- \frac{$var}{".(-$b)." + $var}= \frac{$var - $c}{$var + $a}";
} else {
  $eqn = ($eqn)."+ \frac{$var}{$b - $var}= \frac{$var - $c}{$var + $a}";
}


##########################################

Context()->texStrings;
BEGIN_TEXT
$PAR
Solve the following equation for \($var\):
$PAR
\[
$eqn
\]
$PAR
\( $var = \) \{ ANS_RULE(20) \}
$PAR
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($var = $ans\)
    $PAR
    END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} If there is more than one correct answer, enter your answers as a comma separated list. If the equation has no real solution, write ${LQ}No Solution.${RQ}
  $BR
  END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 
$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();
