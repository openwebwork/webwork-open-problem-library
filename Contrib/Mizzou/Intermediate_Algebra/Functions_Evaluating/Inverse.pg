# DESCRIPTION
# Asks to evaluate points using 1/(ax)
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Evaluating and Solving')
## KEYWORDS('algebra', 'functions')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
  "contextFraction.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction-NoDecimals");
$pm = random(-1,1,2);
$a = non_zero_random(-5,5,1);
$b = random(-7,7);

$dispf = ($pm == 1) ? "\frac{1}{" : "-\frac{1}{";
if ($a == 1) {
  $dispf = $dispf." x";
} elsif ($a == -1) {
  $dispf = $dispf."-x";
} else {
  $dispf = $dispf."$a x";
}

if ($b != 0) {
  $dispf = $dispf."+$b}";
} else {
  $dispf = $dispf."}";
}

do {$x0 = random(-15,15)} until ($a*$x0+$b != 0);
do {$x1 = random(-15,15)} until ($a*$x1+$b != 0 && $x1 != $x0);
do {$x2 = random(-15,15)} until ($a*$x2+$b != 0 && $x2 != $x0 && $x2 != $x1);
$y0 = Compute("$pm/($a*$x0 + $b)");
$y1 = Compute("$pm/($a*$x1 + $b)");
$y2 = Compute("$pm/($a*$x2 + $b)");



###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
If \(f(x) = \displaystyle $dispf\), find the following:
$PAR
(a) \(f($x0)=\) \{ans_rule(10)\}
$PAR
(b) \(f($x1)=\) \{ans_rule(10)\}
$PAR
(c) \(f($x2)=\) \{ans_rule(10)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($y0->cmp(studentsMustReduceFractions=>1));
ANS($y1->cmp(studentsMustReduceFractions=>1));
ANS($y2->cmp(studentsMustReduceFractions=>1));


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD}  (a) \($y0\), $SPACE (b) \($y1\), $SPACE (c) \($y2\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();