# DESCRIPTION
# Gives f(x) = x(x-a)(x-b) and asks for domain, intercepts, and zeros.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Even and Odd')
## KEYWORDS('functions', 'graphs', 'symmetry', 'even', 'odd')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = non_zero_random(-15,15);
do {$b = non_zero_random(-9,9)} until (abs($b) != abs($a));
$fun = "\displaystyle f(x) = x(x-$a)(x-$b)";
$symm = PopUp(["select", "even", "odd", "neither"], "neither");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Find the domain, \(x\)-intercept(s),  \(y\)-intercept(s), and zero(s) of the function
$PAR
\[
$fun.
\]
$PAR
Write the domain in interval notation, and write $BBOLD none $EBOLD in the corresponding blank if no such intercept or zero exists.
$PAR
$SPACE $SPACE (a) Domain: \{ans_rule(20)\} $BR
$SPACE $SPACE (b) \(x\)-intercept(s): \{ans_rule(20)\} $BR
$SPACE $SPACE (c) \(y\)-intercept(s): \{ans_rule(20)\} $BR
$SPACE $SPACE (d) Zero(s): \{ans_rule(20)\} $BR
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
Context("Interval")->strings->add("none"=>{});
$domain = Interval("R");
ANS($domain->cmp());

Context("Point")->strings->add("none"=>{});
$xint = List(Point("(0,0)"), Point("($a,0)"), Point("($b,0)"));
$yint = List(Point("(0,0)"));
$zeros = List("0", "$a", "$b");
ANS($xint->cmp());
ANS($yint->cmp());
ANS($zeros->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} (a) \($domain\), (b) \($xint\), (c) \($yint\), (d) \($zeros\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD}  \{ helpLink("intervals", "Click here for help entering an interval as an answer") \} or \{ helpLink("points", "click here for help entering a point as an answer.") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Gives f(x) = x(x-a)(x-b) and asks for domain, intercepts, and zeros.');
ENDDOCUMENT();
