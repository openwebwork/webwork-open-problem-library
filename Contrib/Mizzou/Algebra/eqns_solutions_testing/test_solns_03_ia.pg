# DESCRIPTION
# Determine if the given points are solutions.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Equations and Inequalities')
## DBsection('Radical Equations')
## KEYWORDS('radical', 'equations')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction-NoDecimals");
Context()->strings->add("yes"=>{}, "no"=>{});
$a = random(-1,1,2)*random(2,5);
$b = non_zero_random(-9,9);
@eqns = ("$a \sqrt{x} + $b", "$a \sqrt[3]{x}+$b");

$ch = random(0,1,1); # choose which equation to use
$x1t = ($ch == 0) ? random(0,9) : random(-5,5);
do {$x2t = ($ch == 0) ? random(0,9) : random(-5,5)} until ($x2t != $x1t);
$x1 = ($x1t)**($ch+2);
$x2 = ($x2t)**($ch+2);

$solns = random(0,2,1); # how many solns
$swap = random(0,1,1); # decide which is correct if $solns = 1
Context()->texStrings;
$eqn = "y = $eqns[$ch]"; 
$y1 = $a*$x1t+$b;
$y2 = $a*$x2t+$b;
$by1 = -$a*$x1t + $b;
$by2 = $a*$x2t - $b;

if ($solns == 0) {
  $ans1 = String("no");
  $ans2 = String("no");
  $pt1 = "\left($x1,$by1\right)";
  $pt2 = "\left($x2,$by2\right)";
} elsif ($solns == 1) {
  if ($swap == 0) {
    $ans1 = String("yes");
    $ans2 = String("no");
    $pt1 = "\left($x1,$y1\right)";
    $pt2 = "\left($x2,$by2\right)";
  } else {
    $ans1 = String("no");
    $ans2 = String("yes");
    $pt1 = "\left($x1,$by1\right)";
    $pt2 = "\left($x2,$y2\right)";
  }
} else {
  $ans1 = String("yes");
  $ans2 = String("yes");
  $pt1 = "\left($x1,$y1\right)";
  $pt2 = "\left($x2,$y2\right)";
}


###########################################################################
# state the problem 
###########################################################################
BEGIN_TEXT
Determine whether each ordered pair is a solution of \($eqn\). Write ${BBOLD}yes${EBOLD} if it is or write ${BBOLD}no${EBOLD} if it is not.
$PAR
(a) \($pt1\): \{ans_rule(5)\}
$PAR
(b) \($pt2\): \{ans_rule(5)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans1->cmp());
ANS($ans2->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} (a) \($ans1\), (b) \($ans2\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
