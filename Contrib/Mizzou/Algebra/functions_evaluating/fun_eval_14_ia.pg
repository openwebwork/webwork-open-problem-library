## DBsubject('Algebra')
## DBchapter()
## DBsection()
## KEYWORDS()
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextLimitedPowers.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
LimitedPowers::OnlyPositiveIntegers();

do {
  $b = non_zero_random(-27,27);
  do {$a = non_zero_random(2,19)} until (gcd($a,$b)==1);
  @good = ();
  for ($i = -4; $i <= 4; $i++) {
    $tmp = (($i)**3 - $b)/$a;
    if ($tmp == floor($tmp)) {
      push (@good,$i);
    }
  }
} until (scalar(@good) > 3);

$up = scalar(@good)-1;
$ch[0] = random(0,$up,1);
do {$ch[1] = random(0,$up,1)} until ($ch[1] != $ch[0]);
do {$ch[2] = random(0,$up,1)} until ($ch[2] != $ch[0] && $ch[2] != $ch[1]);
do {$ch[3] = random(0,$up,1)} until ($ch[3] != $ch[0] && $ch[3] != $ch[1] && $ch[3] != $ch[2]);

$x0 = ($good[$ch[0]]**3 - $b)/$a;
$x1 = ($good[$ch[1]]**3 - $b)/$a;
$x2 = ($good[$ch[2]]**3 - $b)/$a;
$x3 = ($good[$ch[3]]**3 - $b)/$a;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Let \(f(x) = \sqrt[3]{$a x + $b}\). Find the following function values. Write ${BBOLD}not real${EBOLD} if the answer is not a real number.
$PAR
(a) \(f($x0) = \) \{ans_rule(15)\}
$PAR
(b) \(f($x1) = \) \{ans_rule(15)\}
$PAR
(c) \(f($x2) = \) \{ans_rule(15)\}
$PAR
(d) \(f($x3) = \) \{ans_rule(15)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Formula("$good[$ch[0]]")->cmp());
ANS(Formula("$good[$ch[1]]")->cmp());
ANS(Formula("$good[$ch[2]]")->cmp());
ANS(Formula("$good[$ch[3]]")->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD}  (a) \($good[$ch[0]]\), (b) \($good[$ch[1]]\), (c) \($good[$ch[2]]\), (d) \($good[$ch[3]]\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
