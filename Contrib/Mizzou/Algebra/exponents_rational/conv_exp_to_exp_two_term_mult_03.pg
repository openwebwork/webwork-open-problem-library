#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "AnswerFormatHelp.pl",
  "contextFraction.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup

Context("Numeric")->variables->add(
y=>"Real",
t=>"Real",
s=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real",
r=>"Real",
w=>"Real",
z=>"Real");

$var = list_random('p','q','r','u','v','x','y','z');
$var1 = list_random('x','y','z','w','v');
$var2 = list_random('p','q','r','u');

$n2 = random(3,7,1);
$n3 = random(3,7,1);
do {$b = random(2,10,1)} until (gcd($n2,$b) ==1);
do {$c = random(2,10,1)} until (gcd($n3,$c) ==1);
$num = $b*$n3 - $c*$n2;
$den = $n2*$n3;
$expression = "$var^{$b/$n2} \cdot $var^{-$c/$n3}";


Context("Fraction-NoDecimals");
$answer = Fraction($b*$n3 - $n2*$c,$n2*$n3);

Context()->texStrings;
BEGIN_TEXT
Simplify and write the following as a single rational exponent of \($var\). If
$PAR
\[$expression = $var^m \]
$PAR
then 
$PAR
\(m = \) \{ANS_RULE(5)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(m = $answer\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


$showPartialCorrectAnswers = 1;

ANS(Compute($answer)->cmp(studentsMustReduceFractions=>1));

COMMENT('MathObject version');
