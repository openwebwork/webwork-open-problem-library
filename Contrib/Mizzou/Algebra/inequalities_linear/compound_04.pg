##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real" );

$var = list_random('x','y','z','w','u','v','p','q');

$a = random(3,10,1);
$b = random(-1,1,2)*random(1,10,1);
$c = random(5,10,1);
$d = random(2,5,1);
$ad = $a + $d;

$end1 = $a*$c - $b;
$end2 = $ad*$c - $b;

$case = random(1,4,1);

Context("Interval");
if($case ==1){
   $string1 = '<';
   $string2 = '<';
   $ans = Compute( " ($end1,$end2) " );}
elsif($case ==2){
   $string1 = '\leq';
   $string2 = '<';
   $ans = Compute( " [$end1,$end2) " );}
elsif($case == 3){
   $string1 = '<';
   $string2 = '\leq';
   $ans = Compute( " ($end1,$end2] " );}
elsif($case ==4){
   $string1 = '\leq';
   $string2 = '\leq';
   $ans = Compute( " [$end1,$end2] " );}
   
$ineq = "$a $string1 \frac{$var + $b}{$c} $string2 $ad ";

$interval = Compute("[1,2)");
ANS( Compute($ans)->cmp() );


##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
\{ANS_RULE(10)\}


END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($ans\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



$showPartialCorrectAnswers = 1;

COMMENT('of form a < or <= (x + b)/c < or <= d, where d > a');
ENDDOCUMENT();
