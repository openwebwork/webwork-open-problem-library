# DESCRIPTION
# Asks to solve a linear inequality
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter(Equations and Inequalities')
## DBsection('Linear Inequalities')
## KEYWORDS('linear', 'inequalities')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Interval");
$a = random(2,8,1);
$b = random(1,5,1)*$a;
$c = $b/$a;
do {$d = random(2,9)*random(-1,1,2)} until (abs($d) != abs($c));
for ($i = 0; $i < random(10,50,1); $i++) {
  $case = random(0,3,1);
}
if ($d < 0) {
  if ($case == 0) {
    $ans = Compute("(0,inf)");
    $sign = "<";
  } elsif ($case == 1) {
    $ans = Compute("[0,inf)");
    $sign = "\leq";
  } elsif ($case == 2) {
    $ans = Compute("(-inf,0)");
    $sign = ">";
  } else {
    $ans = Compute("(-inf,0]");
    $sign = "\geq";
  }
  $dispineq = "$a \left($c + $d x \right)".$sign."$b";
} else {
  if ($case == 0) {
    $ans = Compute("(-inf,0)");
    $sign = "<";
  } elsif ($case == 1) {
    $ans = Compute("(-inf,0]");
    $sign = "\leq";
  } elsif ($case == 2) {
    $ans = Compute("(0,inf)");
    $sign = ">";
  } else {
    $ans = Compute("[0,inf)");
    $sign = "\geq";
  }
  $dispineq = "$a \left($d x + $c \right)".$sign."$b";
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
Context()->strings->add("no solutions"=>{}, "no solution"=>{alias=>"no solutions"});
BEGIN_TEXT
Solve the following inequality.  Write your answer using interval notation or if no solutions exist write ${BBOLD}no solutions${EBOLD}.
$PAR
\[
$dispineq
\]
$PAR
Answer: \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{helpLink("intervals", "Click here for help entering intervals as answers.")\}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
