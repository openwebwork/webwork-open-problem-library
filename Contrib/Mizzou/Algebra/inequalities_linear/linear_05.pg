## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('1.6')


##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real",
p=>"Real",
q=>"Real" );

$var = list_random('x','y','z','w','u','v','p','q');

do {
$a = random(2,10,1);
do {$b = random(2,10,1)} until (gcd($a, $b) ==1);
$c = random(2,10,1);
do {$d = random(2,10,1)} until (gcd($d,$c) ==1);
$e = random(2,10,1);
do {$f = random(2,10,1)} until (gcd($e, $f) ==1);
} until ($b == $d || $b == $f || $d == $f);

Context("Fraction-NoDecimals");
$endpoint = Fraction($c*$f*$b,$e*$b*$d+$a*$f*$d);#( $c/$d )/( ($e/$f) + ($a /$b) );

$case = random(1,4,1);

Context("Interval");
if($case ==1){
   $string = '>';
   $ans = Compute( " ($endpoint,inf) " );}
elsif($case ==2){
   $string = '<';
   $ans = Compute( " (-inf,$endpoint) " );}
elsif($case == 3){
   $string = '\geq';
   $ans = Compute( " [$endpoint,inf) " );}
elsif($case ==4){
   $string = '\leq';
   $ans = Compute( " (-inf,$endpoint] " );}
   
$ineq = "\frac{$e}{$f} $var - \frac{$c}{$d}  $string  - \frac{$a}{$b} $var";

$interval = Compute("[1,2)");
ANS( Compute($ans)->cmp() );




##########################################
Context()->strings->add("no solutions"=>{}, "no solution"=>{alias=>"no solutions"});
Context()->texStrings;
BEGIN_TEXT
Solve the following inequality.  Write your answer using interval notation or if no solutions exist write ${BBOLD}no solutions${EBOLD}.
$PAR
\[
$ineq
\]
$PAR
Answer: \{ANS_RULE\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  if ($case == 1) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left($endpoint,\infty\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 2) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left(-\infty,$endpoint\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 3) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left[$endpoint,\infty\right)\)
    $PAR
    END_TEXT
  } else {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left(-\infty,$endpoint\right]\)
    $PAR
    END_TEXT
  } 
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{ helpLink("intervals","Click here for help entering intervals as answers.") \}.
  $BR
  END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


$showPartialCorrectAnswers = 1;

COMMENT('of form ax - b <*> -c x, where <*> is any inequality and a,b,c are fractions');
ENDDOCUMENT();
