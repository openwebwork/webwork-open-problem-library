# DESCRIPTION
# Of form -a(x-b)(x+c)^2(x-d) <*> 0, where <*> is any type of inequality.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Equations and Inequalities')
## DBsection('Polynomial Inequalities')
## KEYWORDS('polynomial', 'inequality', 'inequalities')
## Author1('Rick Lynch')
## Author2('David Covert')
## Author3('Teri Christiansen')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Interval");
$var = list_random('x', 'y', 'z', 'w', 'u', 'v');
Context()->variables->are(lc($var)=>"Real", uc($var)=>"Real");

$a = random(2,8);
$b = random(2,5);
$c = random(2,5);
$d = random(7,12);

$case = random(1,4);
if ($case == 1) {
  $str = '<';
  $answer = Interval("(-inf,-$c)U(-$c,$b)U($d,inf)");
} elsif ($case == 2) {
  $str = '\leq';
  $answer = Interval("(-inf,$b]U[$d,inf)");
} elsif ($case == 3) {
  $str = '>';
  $answer = Interval("($b,$d)");
} else {
  $str = '\geq';
  $answer = Interval("{-$c}U[$b,$d]");
}

$ineq = "-$a($var - $b)($var + $c)^2($var - $d) $str 0";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the following inequality and write your answer using interval notation.
$PAR 
\[ $ineq \]
$PAR
Answer: \{ans_rule(25)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($answer\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{ helpLink("intervals", "Click here for help entering an interval as an answer.") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Of form -a(x-b)(x+c)^2(x-d) <*> 0, where <*> is any type of inequality.');
ENDDOCUMENT();
