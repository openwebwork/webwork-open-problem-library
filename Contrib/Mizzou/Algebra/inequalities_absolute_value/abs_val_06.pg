##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real");

$var = list_random('x','y','z','w','u','v');

$a = random(2,10,1);
$b = random(1,10,1);
$d = random(2,5,1);
$c = random(3,10,1) - $d;

####endpoints
Context("Fraction-NoDecimals");
$end1 = Fraction(-($c  + $d)+ $b,$a);
$end2 = Fraction(($c + $d + $b),$a);

$case = random(1,2,1);

Context("Interval");
if($case ==1){
   $string = '<';
   $ans = Compute( " ($end1, $end2) " );}
elsif($case ==2){
   $string = '\leq';
   $ans = Compute( " [$end1,$end2] " );}
   
$ineq = "| $b - $a $var | - $d $string $c ";

ANS( Compute("$ans")->cmp() );


##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
\{ANS_RULE(10)\}
$PAR
If there is no solution, write "No Solution" in the blank provided.
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  if ($case == 1) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left($end1,$end2\right)\)
    $PAR
    END_TEXT
  } else {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \(\left[$end1,$end2\right]\)
    $PAR
    END_TEXT
  }
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



$showPartialCorrectAnswers = 1;

COMMENT('of form |b + ax| - d < or <= c, where c > d > 0');
ENDDOCUMENT();
