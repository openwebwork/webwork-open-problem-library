##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real");

$var = list_random('x','y','z','w','u','v');

$a = random(2,20,1);

$end1 = -$a;
$end2 = $a;


$case = random(1,2,1);

Context("Interval");
if($case ==1){
   $string = '<';
   $ans = Compute( " ($end1,$end2) " );}
elsif($case ==2){
   $string = '\leq';
   $ans = Compute( " [$end1,$end2] " );}
#elsif($case == 3){
#   $string1 = '<';
#   $string2 = '\geq';
#   $ans = Compute( " (-inf,$end1) U [$end2,inf) " );}
#elsif($case ==4){
#   $string1 = '\leq';
#   $string2 = '\geq';
#   $ans = Compute( " (-inf,$end1] U [$end2,inf) " );}
   
$ineq = "| $var| $string $a ";

ANS( Compute("$ans")->cmp() );


##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
\{ANS_RULE(10)\}
$PAR
If there is no solution, write "No Solution" in the blank provided.
END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($ans\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



$showPartialCorrectAnswers = 1;

COMMENT('of form |x| < or <= c, where c > 0');
ENDDOCUMENT();
