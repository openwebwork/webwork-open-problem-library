# DESCRIPTION
# Asks to list all whole/natural numbers in the given set. The numbers in the set are between two 
# numbers.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Real Numbers')
## KEYWORDS('real numbers')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$case = random(0,1,1); # 0 - whole numbers, 1 - natural numbers
if ($case == 0) {
  $str1 = "whole";
} else {
  $str1 = "natural";
}
$a = random(4,7);
$b = $a + random(3,7);
@anslist = (($a+1)..($b-1));
$ans = List(@anslist);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
List the elements of the set 
$PAR
\[
$LBRACE x | x \mbox{ is a $str1 number between $a and $b} $RBRACE.
\]
$PAR
Separate multiple answers by commas.
$PAR
Answer: \{ans_rule(30)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($ans)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Asks to list all whole/natural numbers in the given set. The numbers in the set are between two numbers.' );
ENDDOCUMENT();
