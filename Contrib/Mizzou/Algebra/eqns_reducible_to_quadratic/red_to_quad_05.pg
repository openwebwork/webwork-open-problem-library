# DESCRIPTION
# Solve an equation reducible to a quadratic: a x^3 + bx^2 = cx or cx = ax^3 + bx^2.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter(Equations and Inequalities')
## DBsection('Quadratic Equations')
## KEYWORDS('equations', 'quadratic')
## Author1('Rick Lynch')
## Author2('David Covert')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "fracListChecker.pl",
  "MUHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
setFracListFunctions(); # set up context for custom checker
Context()->strings->add("no solutions"=>{}, "infinitely many"=>{}, "no solution"=>{alias=>"no solutions"}, "none"=>{alias=>"no solutions"}, "all reals"=>{alias=>"infinitely many"});
$var = list_random('x','y','z','w','p','q','r','s','t','u','v');
Context()->variables->are($var=>"Real", uc($var)=>"Real");

do {
  $a = random(2,3,1);
  $b = random(2,6,1);
  $c = random(2,3,1);
  $d = random(2,6,1);

  $e1 = $a*$c;
  $e2 = $b*$c - $a*$d;
  $e3 = $b*$d;
} until ($e2 != 0);

$eqn1 = "$e1 $var^3 + $e2 $var^2";
if ($e2 == -1) {
  $eqn1 = "$e1*$var^3 - $var^2";
} elsif ($e2 == 1) {
  $eqn1 = "$e1*$var^3 + $var^2";
}
$eqn2 = "$e3 $var";
$case = random(0,1);
if ($case == 1) {
  $swap = $eqn1;
  $eqn1 = $eqn2;
  $eqn2 = $swap;
}

$answer = List(Fraction(0), Fraction(-$b,$a)->reduce, Fraction($d,$c)->reduce);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var\):
$PAR \[$eqn1 = $eqn2\] $PAR
\($var = \) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp(checkFracList()));


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($var = $answer\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  $BBOLD Help: $EBOLD \{ MUHelp("quadeqns") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Solve an equation reducible to a quadratic: a x^3 + bx^2 = cx or cx = ax^3 + bx^2.');
ENDDOCUMENT();
