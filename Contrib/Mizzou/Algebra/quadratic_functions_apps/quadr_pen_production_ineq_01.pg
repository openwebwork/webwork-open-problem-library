# DESCRIPTION
# Asks for number of pens to minimize cost and and for minimum cost.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Modeling with Functions')
## KEYWORDS('quatratic inequality')
## Author('Patrick Spencer')
## Institution('University of Missouri-Columbia')


##################################################################
# initialization 
##################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$refreshCachedImages = 1;
$showPartialCorrectAnswers = 1;


##################################################################
# setup contexts and variables 
##################################################################
Context("Numeric");

# Choose random numbers 'u' and 'v' for our roots for the
# polynomial (x-u)(x-v) = 0
$u = random(1,3);
do {$v = random(2,5)} until ($v > $u);

# t is our target cost. Our polynomial should be t when x is u or
# v so C(x) = k(x-u)(x-v)+t where k is a positive integer
$t = random(10,25);
$k = random(3,10);

# Expanding C(x) above into ax^2+bx+c we get
$a = $k;
$b = -$k*($u+$v);
$c = $k*$u*$v+$t;

$b_abs = abs($b);
$disp_eq = Compute("$a x^2 - $b_abs x + $c");
$disp_t = $t*100;

#################################################################
# state the problem 
#################################################################
Context()->texStrings;
BEGIN_TEXT
$PAR
Suppose \(C(x) = $disp_eq\), \(x \ge 0\)
represents the cost, in hundreds of dollars, to produce \(x\)
thousands of pens. Find the number of pens which can be produced
for no more than $\($disp_t\).  
$PAR 
Answer: between
\{ans_rule(5)\} thousand and \{ans_rule(5)\} thousand pens
END_TEXT


#################################################################
# check the answer  
#################################################################
ANS(Compute($u)->cmp());
ANS(Compute($v)->cmp());


#################################################################
# use PeriodicRerandomization to write the answer and generate a 
# new version of the problem
#################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR 
    $BBOLD Answer $EBOLD: 
    between \($u\) thousand and \($v\)
    thousand pens can be produced for less than $\($disp_t\).
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

ENDDOCUMENT();

