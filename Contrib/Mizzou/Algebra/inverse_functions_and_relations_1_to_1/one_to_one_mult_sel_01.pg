########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("1");

#######################################
#  Set-up
$a = random(2,10,1);
do {$b = random(2,10,1)} until (gcd($a,$b) == 1);
$c = random(2,10,1);
$d = random(2,10,1);
$e = random(2,10,1);
$f = list_random(2, 'e',3, 10);
$g = random(1,10,1);
$h = random(1,10,1);
$k = random(2,8,1);

$f1 = "$a x + $b";
$f2 = " x^2 - $c";
$f3 = "$a x^3 - $b ";
$f5 = " |x - $g| ";
$f6 = "-\frac{$h}{x}";
$f8 = " \frac{$k}{x^2}";

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Select all functions which are one-to-one on their domains.", 
"\(f(x) = $f1\)$BR",
"\( f(x) = $f3\)$BR",                
"\( f(x) = \displaystyle $f6 \)$BR",
);
$mc -> extra(
"\(f(x) =  \displaystyle $f2 \)$BR",
"\(f(x) =  \displaystyle $f5 \)$BR",
"\(f(x) =  \displaystyle $f8 \)$BR",
);



################################################
#  Main text

BEGIN_TEXT

\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}
END_TEXT


################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );

if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  ${BBOLD}Answer:${EBOLD} 
  \{$mc->correct_ans()\}
  $PAR
  END_TEXT
} 
Context()->normalStrings;
PeriodicStatus(); 


COMMENT('MathObject version');
ENDDOCUMENT();
