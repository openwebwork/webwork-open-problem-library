########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PeriodicRerandomization.pl",
  "MathObjects.pl",
  "parserImplicitPlane.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;

#######################################
#  Set-up
Context()->variables->add( h=>"Real");

## Coefficients
$a = random(-1,1,2)*random(2,10,1);
$b = random(2,10,1);
$b2 = ($b)**2;

## Functions
$f = " \frac{$a x^2}{x^2 - $b2}";

## Answers
Context("ImplicitPlane");
$horiz = List($a);
$vert = List(-$b,$b);

#$ans = List($vert1, $vert2, $horiz);
ANS( $horiz->cmp() );
ANS( $vert->cmp() );
 
Context()->texStrings;
################################################
#  Main text

BEGIN_TEXT
List all asymptotes (both horizontal and vertical) of the rational function 
$PAR
\[
f(x) = \displaystyle $f
\]
$PAR
and separate your answers by commas.
$PAR
Horizontal Asymptote(s): \(y = \) \{ans_rule(20)\}
$PAR
Vertical Asymptote(s): \(x = \) \{ans_rule(20)\}
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \(y = $horiz\), \(x = $vert\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 


################################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;


COMMENT('MathObject version');
ENDDOCUMENT();
