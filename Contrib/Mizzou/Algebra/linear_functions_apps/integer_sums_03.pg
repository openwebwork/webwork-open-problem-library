# DESCRIPTION
# Asks to write an algebraic expression representing a situation
# ENDDESCRIPTION

## DBsubject('Intermediate Algebra')
## DBchapter('Ch 01: Algebra, Mathematical Models and Problem Solving')
## DBsection('Algebra, Mathematical Models, and Problem Solving')
## KEYWORDS('problem solving', 'linear', 'equations')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGstandard.pl",
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@list = ("integers", "odd integers", "even integers");

for ($i = 0; $i < random(10,50); $i++) { # makes more random?
  $c1 = random(0,2,1);
  $dummy = random(1,15,1);
}


if ($c1 == 0) {
  $num1 = random(20,100);
  $num2 = $num1+1;
  $num3 = $num2+1;
  $sum = $num1+$num2+$num3;
  $ans = List($num1,$num2,$num3);
} elsif ($c1 == 1) {
  $num1 = random(21,101,2);
  $num2 = $num1+2;
  $num3 = $num2+2;
  $sum = $num1+$num2+$num3;
  $ans = List($num1,$num2,$num3);
} else {
  $num1 = random(20,100,2);
  $num2 = $num1+2;
  $num3 = $num2+2;
  $sum = $num1+$num2+$num3;
  $ans = List($num1,$num2,$num3);
}



###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
The sum of three consecutive $list[$c1] is \($sum\). Find the numbers.
$PAR
Answer: \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} Separate multiple answers using a comma separated list.
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();