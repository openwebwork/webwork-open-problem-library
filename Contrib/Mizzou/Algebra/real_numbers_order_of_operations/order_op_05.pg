# DESCRIPTION
# Asks to use order of operations to simplify
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Real Numbers')
## KEYWORDS('order of operations')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a1 = random(2,7);
$c1 = random(4,10);
do {$b1 = random(2,10)**2 - $c1} until ($b1 > 1);
$d1 = random(2,7);
$e1 = random(2,5);
$f1 = random(2,7);
$g1 = random(2,7);
$dispexpn[0] = "\(\displaystyle \frac{-$a1\sqrt{$b1+$c1}+(-$d1)^2}{$e1^3 + |-$f1($g1)|} = \)";

$a2 = random(2,4);
$b2 = random(2,7);
$d2 = random(11,35);
$c2 = random(2,10)**2 + $d2;
$e2 = random(2,5);
$f2 = random(2,7);
$g2 = random(1,7);
$dispexpn[1] = "\(\displaystyle \frac{(-$a2)^4 + $b2\sqrt{$c2 - $d2}}{$e2^3+|$f2(-$g2)|} = \)";

Context("Fraction-NoDecimals");
$ans[0] = Fraction(-$a1*sqrt($b1+$c1)+(-$d1)**2,$e1**3 + abs(-$f1*($g1)));
$ans[1] = Fraction((-$a2)**4 + $b2*sqrt($c2 - $d2), $e2**3 + abs($f2*(-$g2)));
$choice = random(0,1,1);
Context()->operators->undefine("+","-","*","^");
Context()->functions->undefine("abs", "sqrt");
Context()->parens->remove("|");
Context()->{error}{msg}{"Unexpected character '|'"} = "Absolute value is not allowed.";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Use order of operations to simplify:
$PAR
$dispexpn[$choice] \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($ans[$choice])->cmp(studentsMustReduceFractions=>1));


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($ans[$choice]\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
