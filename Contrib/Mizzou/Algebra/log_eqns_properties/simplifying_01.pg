##DESCRIPTION
##  Logarithms: Simplifying
##ENDDESCRIPTION

## KEYWORDS('nonlinear inequality', 'polynomial')

## DBsubject('Algebra') 
## BookTitle('Exponential and Logarithmic Functions')
## DBchapter('Laws of Logarithms') 
## Date('Spring 2012')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## Institution('University of Missouri')
## TitleText1('College Algebra')
## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('5.3')

##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context("Numeric");
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real");

$a = list_random(3,4,5,6,10);
$n = random(2,4,1);
$an = $a**$n;
$b = list_random(3,4,5,10);
$m = random(2,4,1);
$bm = $b**$m;
$c = list_random(3,4,5,10);
$k = random(2,4,1);
$ck = $c**$k;
do {$e = random(-10,10,1)} until ($e != 1);
$j = random(12,19,1);
do {$p = random(-50,50,1)} until ($p != 1);
$f = list_random(2,3,10);
$exp = random(2,3,4);
$fexp = $f**$exp;
do {$r = random(2,100,1)} until ($r != 10);

$power = random(2,5,1);
if ($power ==2){
   $l = "0.01";
}
elsif($power ==3){
   $l = "0.001";
}
elsif($power ==4){
   $l = "0.0001";
}
elsif($power ==5){
    $l = "0.00001";
}




ANS( Compute($n)-> cmp() );
ANS( Compute($m)-> cmp() );
ANS( Compute(-$k)-> cmp() );
ANS( Compute(-$power) -> cmp() );
ANS( Compute($e) -> cmp() );
ANS( Compute($p) -> cmp() );
ANS( Compute(1/$exp) -> cmp() );
ANS( Compute(0) -> cmp() );



if ($a == 10) {
  $line1 = " \log ($an)";
} else {
  $line1 = " \log_$a($an)  ";
}

if ($b == 10) {
  $line2 = " \log($bm) ";
} else {
  $line2 = " \log_$b($bm) ";
}

if ($c == 10) {
  $line3 = " \log \left(\frac{1}{$ck}\right)";
} else {
  $line3 = " \log_$c \left(\frac{1}{$ck}\right)";
}

$line4 = " \log($l)";

$line5 = " \ln(e^{$e})";

$line6 = " \log_{$j}($j^{$p})";

$line7 = " \log_{$fexp}($f)";

$line8 = " \log_{$r}(1)";


##########################################

Context()->texStrings;
BEGIN_TEXT

Simplify the following quantities.
$PAR
 $SPACE \( $line1 = \)  \{ans_rule(10)\}
$PAR
 $SPACE \( $line2 = \)  \{ans_rule(10)\}
$PAR
 $SPACE \( $line3 = \)  \{ans_rule(10)\}
$PAR
 $SPACE \( $line4 = \)  \{ans_rule(10)\}
$PAR
 $SPACE \( $line5 = \)  \{ans_rule(10)\}
$PAR
 $SPACE \( $line6 = \)  \{ans_rule(10)\}
$PAR
 $SPACE \( $line7 = \)  \{ans_rule(10)\}
$PAR
 $SPACE \( $line8 = \)  \{ans_rule(10)\}
$PAR
END_TEXT

###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $BBOLD Answers: $EBOLD
    $PAR
    \( $line1 = $n \)
    $PAR
    \( $line2 = $m \)
    $PAR
    \( $line3 = -$k \)
    $PAR
    \( $line4 = -$power \)
    $PAR
    \( $line5 = $e \)
    $PAR
    \( $line6 = $p \)
    $PAR
    \( $line7 = 1/$exp \)
    $PAR
    \( $line8 = 0 \)
    $PAR
    END_TEXT
}


Context()->normalStrings;
PeriodicStatus();

$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();
