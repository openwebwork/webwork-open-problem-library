# DESCRIPTION
# Asks to simplify two absolute value expressions (with decimals).
# ENDDESCRIPTION

## DBsubject('Intermediate Algebra')
## DBchapter('Ch 01: Algebra, Mathematical Models and Problem Solving')
## DBsection('Operations with Real Numbers and Simplifying Algebraic Expressions')
## KEYWORDS('real numbers','algebraic expressions')
## Author('RA Cruz')
## Institution('The College of Idaho')
## Pulled from NPL: Library/CollegeOfIdaho/setAlgebra_01_02_OperationsWithRealNumbers/12IntAlg_02_OperationsWithReals.pg
## Edited and updated to include PeriodicRerandomization by Rick Lynch @ Mizzou


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGchoicemacros.pl",
  "contextLimitedNumeric.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedNumeric");
@num = (random(-12,-2,.1),random(-12,-2,1));
@a = (-1*$num[0],$num[1]);
@display_problem = ("|$num[0]|","-|$num[1]|");
@slice = NchooseK(2,2);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Simplify:  
$PAR
(a) $SPACE \( $display_problem[$slice[0]] = \)  \{ ans_rule(10) \} 
$PAR
(b) $SPACE \( $display_problem[$slice[1]] = \)  \{ ans_rule(10) \} 
END_TEXT


###########################################################################
# check the answer  
###########################################################################
$ans_a = Real($a[$slice[0]]);
$ans_b = Real($a[$slice[1]]);
ANS($ans_a->cmp);
ANS($ans_b->cmp);


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} (a) \($ans_a\), $SPACE (b) \($ans_b\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus();

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Pulled from NPL: Library/CollegeOfIdaho/setAlgebra_01_02_OperationsWithRealNumbers/12IntAlg_02_OperationsWithReals.pg
$BR
Desc: Asks to simplify two absolute value expressions (with decimals).');
ENDDOCUMENT();
