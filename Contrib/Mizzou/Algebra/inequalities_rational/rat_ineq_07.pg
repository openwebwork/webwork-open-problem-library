##DESCRIPTION
##  Nonlinear inequalities: Polynomials
##ENDDESCRIPTION

## KEYWORDS('nonlinear inequality', 'polynomial')

## DBsubject('Algebra') 
## BookTitle('Equations and Inequalities')
## DBchapter('Nonlinear Inequalities') 
## Date('Spring 2012')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## Institution('University of Missouri')
## TitleText1('College Algebra')
## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('4.6')

##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real");

$var = list_random('x','y','z','w','u','v');

do {
$a = random(2,8,1);
$b = random(-1,1,2)*random(2,8,1);
$c = random(2,5,1);

$case = random(1,4,1);

######endpoints
Context("Fraction-NoDecimals");
$end1 = Fraction($c*$b + $a,1 - $c);
$end2 = -$b;
} until ($end1 < $end2);

Context("Interval");
$flip = random(0,1);
if($case == 1){
   $string = ($flip == 0) ? '<' : '>';
   $ans = Compute( "(-inf,$end1) U ($end2,inf)" ) ;}
elsif($case ==2){
   $string = ($flip == 0) ? '\leq' : '\geq';
   $ans = Compute( "(-inf,$end1] U ($end2,inf)" ) ;}
elsif($case == 3){
   $string = ($flip == 0) ? '>' : '<';
   $ans = Compute( "($end1,$end2)" ) ;}
elsif($case ==4){
   $string = ($flip == 0) ? '\geq' : '\leq';
   $ans = Compute( "[$end1,$end2)" ) ;}

ANS( Compute($ans)-> cmp() );

$ineq = ($flip == 0) ? "\frac{ $var - $a }{ $var + $b } $string $c" : "$c $string \frac{ $var - $a }{ $var + $b }";



##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
\{ANS_RULE(10)\}

END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
  if ($case == 1) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \( \left(-\infty,$end1\right) \cup \left($end2,\infty\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 2) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \( \left(-\infty,$end1\right] \cup \left($end2,\infty\right)\)
    $PAR
    END_TEXT
  } elsif ($case == 3) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \( \left($end1,$end2\right)\)
    $PAR
    END_TEXT
  } else {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \( \left[$end1,$end2\right)\)
    $PAR
    END_TEXT
  } 
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Features PeriodicRerandomization', 'either expn > n or expn < n');
ENDDOCUMENT();
