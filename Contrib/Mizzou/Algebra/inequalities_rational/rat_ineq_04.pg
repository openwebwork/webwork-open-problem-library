##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "AnswerFormatHelp.pl",
  "parserMultiAnswer.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup
Context()->variables->add(
y=>"Real",
z=>"Real",
w=>"Real",
u=>"Real",
v=>"Real");

$var = list_random('x','y','z','w','u','v');

$a = random(3,10,1);
$b = random(3,10,1);
$c = random(3,10,1);
$e1 = $c - $b;
$e2 = -$c*$b;
$n = random(2,10,2);

$case = random(1,4,1);

######endpoints
$end1 = -$c;
$end2 = 0;
$end3 = $b;

Context("Interval");
if($case == 1){
   $string = '<';
   $ans = Compute( "($end1,$end2) U ($end2,$end3)" ) ;}
elsif($case ==2){
   $string = '\leq';
   $ans = Compute( "($end1,$end3)" ) ;}
elsif($case == 3){
   $string = '>';
   $ans = Compute( "(-inf, $end1) U ($end3,inf)" ) ;}
elsif($case ==4){
   $string = '\geq';
   $ans = Compute( "(-inf, $end1) U {0} U ($end3,inf)" ) ;}

ANS( Compute($ans)-> cmp() );

if ($e1 != 0) {
  if ($e1 == 1) {
    $ineq = " \frac{$a $var^{$n}}{$var^2 + $var + $e2 } $string 0 ";
  } elsif ($e1 == -1) {
    $ineq = " \frac{$a $var^{$n}}{$var^2 - $var + $e2 } $string 0 ";
  } else {
    $ineq = " \frac{$a $var^{$n}}{$var^2 + $e1 $var + $e2 } $string 0 ";
  }
} else {
  $ineq = " \frac{$a $var^{$n}}{$var^2 + $e2 } $string 0 ";
}


##########################################

Context()->texStrings;
BEGIN_TEXT

Solve the following inequality.  Write your answer using \{ AnswerFormatHelp("intervals","interval notation") \}.
$PAR
\[
$ineq
\]
$PAR
\{ANS_RULE(10)\}

END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {

    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    \($ans\)
    $PAR
    END_TEXT
 
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 


$showPartialCorrectAnswers = 1;

COMMENT('MathObject version', 'Features PeriodicRerandomization');
ENDDOCUMENT();
