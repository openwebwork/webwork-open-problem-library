# DESCRIPTION
# Function of form ((x-a)(x-c))/((x-b)(x-c)). Hole at x = c;
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Graphs of Functions')
## KEYWORDS('functions', 'rational', 'graphs')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "AnswerFormatHelp.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGgraphmacros.pl",
  "fracListChecker.pl",
  "unionTables.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$refreshCachedImages = 1;
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$a = non_zero_random(-5,5);
do {$b = non_zero_random(-5,5)} until (abs($a) != abs($b));
do {$c = non_zero_random(-5,5)} until (abs($c) != abs($a) && abs($c) != abs($b));
$top = nicestring([1,-$a-$c,$a*$c],["x^2","x",""]);
$bot = nicestring([1,$b-$c,-$b*$c],["x^2","x",""]);
$dispfun = "f(x) = \frac{$top}{$bot}";
$xhg = $c;
$nxhg = -$c;
$yhg = ($c-$a)/($c+$b);
$nyhg = (-$c-$a)/(-$c+$b);

$maxx = abs($b)+abs($a)+abs($c)+5;
$maxy = $maxx;
$minx = -$maxx;
$miny = $minx;
$gsize = 500;

for ($i = 0; $i < 5; $i++) {
  $graphs[$i] = init_graph($minx, $miny, $maxx, $maxy, size=>[$gsize,$gsize]);
  for ($j = $minx; $j <= $maxx; $j++) {
    $graphs[$i]->moveTo($j,$miny);
    $graphs[$i]->lineTo($j,$maxy,'gray',1);
  }
  for ($j = $miny; $j <= $maxy; $j++) {
    $graphs[$i]->moveTo($minx,$j);
    $graphs[$i]->lineTo($maxx,$j,'gray',1);
  }
  $graphs[$i]->moveTo($minx, 0);
  $graphs[$i]->arrowTo($maxx, 0, 'black', 2);
  $graphs[$i]->arrowTo($minx, 0, 'black', 2);
  $graphs[$i]->moveTo(0, $miny);
  $graphs[$i]->arrowTo(0, $maxy, 'black', 2);
  $graphs[$i]->arrowTo(0, $miny, 'black', 2);
  $graphs[$i]->lb(new Label($maxx-0.1, 0.4, 'x', 'black', 'bottom', 'right'));
  $graphs[$i]->lb(new Label(0.4, $maxy-0.1, 'y', 'black', 'top', 'left'));

  for ($j = $minx+1; $j < $maxx; $j++) {
    if ($j != 0 && $j % 5 == 0 || $j == 1) {
      $graphs[$i]->lb(new Label($j,-0.1,$j, 'black', 'top','center'));
    }
  }

  for ($j = $miny+1; $j < $maxy; $j++) {
    if ($j != 0 && $j % 5 == 0 || $j == 1) {
      $graphs[$i]->lb(new Label(-0.1,$j,$j, 'black', 'middle', 'right'));
    }
  }
}

# set up plots and answer
@pos = (0..4);
@posspos = (0..4);
for ($i = 0; $i < 5; $i++) {
  $pos[$i] = list_random(@posspos);
  for ($j = 0; $j < scalar(@posspos); $j++) {
    if ($posspos[$j] == $pos[$i] ) {
      $tmp = $posspos[$j];
      $posspos[$j] = $posspos[scalar(@posspos)-1];
      $posspos[scalar(@posspos)-1] = $tmp;
      pop(@posspos);
      $j--;
    }
  }
}

# good function
$goodasym = -$b;
for ($i = $miny-2; $i < $maxy+2; $i = $i + 2) {
  $graphs[$pos[0]]->moveTo($goodasym,$i-0.5);
  $graphs[$pos[0]]->lineTo($goodasym,$i+0.5,'red',4);
}
for ($i = $minx-2; $i < $maxx+2; $i = $i + 2) {
  $graphs[$pos[0]]->moveTo($i-0.5,1);
  $graphs[$pos[0]]->lineTo($i+0.5,1,'red',4);
}
$goodexpn = sub { my $x = shift(); ($x - $a)/(($x + $b)) };
$goodfun1 = new Fun($goodexpn, $graphs[$pos[0]]);
$goodfun1->steps(1500);
$goodfun1->weight(3);
$goodfun1->domain($minx,$goodasym-0.001);
$goodfun2 = new Fun($goodexpn, $graphs[$pos[0]]);
$goodfun2->steps(1500);
$goodfun2->weight(3);
$goodfun2->domain($goodasym+0.001,$maxx);
$graphs[$pos[0]]->stamps(new Circle($xhg,$yhg,6,'blue','white'));


# bad function 1
$badasym1 = $a;
for ($i = $miny-2; $i < $maxy+2; $i = $i + 2) {
  $graphs[$pos[1]]->moveTo($badasym1,$i-0.5);
  $graphs[$pos[1]]->lineTo($badasym1,$i+0.5,'red',4);
}
for ($i = $minx-2; $i < $maxx+2; $i = $i + 2) {
  $graphs[$pos[1]]->moveTo($i-0.5,1);
  $graphs[$pos[1]]->lineTo($i+0.5,1,'red',4);
}
$badexpn1 = sub { my $x = shift(); ($x+$b)/(($x - $a)) };
$badfun11 = new Fun($badexpn1, $graphs[$pos[1]]);
$badfun11->steps(1500);
$badfun11->weight(3);
$badfun11->domain($minx,$badasym1-0.001);
$badfun12 = new Fun($badexpn1, $graphs[$pos[1]]);
$badfun12->steps(1500);
$badfun12->weight(3);
$badfun12->domain($badasym1+0.001,$maxx);
$graphs[$pos[1]]->stamps(new Circle($xhg,($c+$b)/($c-$a),6,'blue','white'));


# bad function 2
$badasym2 = $b;
for ($i = $miny-2; $i < $maxy+2; $i = $i + 2) {
  $graphs[$pos[2]]->moveTo($badasym2,$i-0.5);
  $graphs[$pos[2]]->lineTo($badasym2,$i+0.5,'red',4);
}
for ($i = $minx-2; $i < $maxx+2; $i = $i + 2) {
  $graphs[$pos[2]]->moveTo($i-0.5,1);
  $graphs[$pos[2]]->lineTo($i+0.5,1,'red',4);
}
$badexpn2 = sub { my $x = shift(); ($x+$a)/(($x - $b)) };
$badfun21 = new Fun($badexpn2, $graphs[$pos[2]]);
$badfun21->steps(1500);
$badfun21->weight(3);
$badfun21->domain($minx,$badasym2-0.001);
$badfun22 = new Fun($badexpn2, $graphs[$pos[2]]);
$badfun22->steps(1500);
$badfun22->weight(3);
$badfun22->domain($badasym2+0.001,$maxx);
$graphs[$pos[2]]->stamps(new Circle($xhg,($c+$a)/($c-$b),6,'blue','white'));

# bad function 3
$badasym3 = 1;
for ($i = $miny-2; $i < $maxy+2; $i = $i + 2) {
  $graphs[$pos[3]]->moveTo($badasym3,$i-0.5);
  $graphs[$pos[3]]->lineTo($badasym3,$i+0.5,'red',4);
}
for ($i = $minx-2; $i < $maxx+2; $i = $i + 2) {
  $graphs[$pos[3]]->moveTo($i-0.5,$a);
  $graphs[$pos[3]]->lineTo($i+0.5,$a,'red',4);
}
$badexpn3 = sub { my $x = shift(); ($a*$x +$b)/(($x - 1)) };
$badfun31 = new Fun($badexpn3, $graphs[$pos[3]]);
$badfun31->steps(1500);
$badfun31->weight(3);
$badfun31->domain($minx,$badasym3-0.001);
$badfun32 = new Fun($badexpn3, $graphs[$pos[3]]);
$badfun32->steps(1500);
$badfun32->weight(3);
$badfun32->domain($badasym3+0.001,$maxx);
if ($c != -1) {
  $graphs[$pos[3]]->stamps(new Circle(-$c,(-$a*$c+$b)/(-$c-1),6,'blue','white'));
} else {
  $graphs[$pos[3]]->stamps(new Circle($xhg,($a*$c+$b)/($c-1),6,'blue','white'));
}

# bad function 4
$badasym4 = -$b;
for ($i = $miny-2; $i < $maxy+2; $i = $i + 2) {
  $graphs[$pos[4]]->moveTo($badasym4,$i-0.5);
  $graphs[$pos[4]]->lineTo($badasym4,$i+0.5,'red',4);
}
for ($i = $minx-2; $i < $maxx+2; $i = $i + 2) {
  $graphs[$pos[4]]->moveTo($i-0.5,$a);
  $graphs[$pos[4]]->lineTo($i+0.5,$a,'red',4);
}
$badexpn4 = sub { my $x = shift(); $a*$x/(($x + $b)) };
$badfun41 = new Fun($badexpn4, $graphs[$pos[4]]);
$badfun41->steps(1500);
$badfun41->weight(3);
$badfun41->domain($minx,$badasym4-0.001);
$badfun42 = new Fun($badexpn4, $graphs[$pos[4]]);
$badfun42->steps(1500);
$badfun42->weight(3);
$badfun42->domain($badasym4+0.001,$maxx);
$graphs[$pos[4]]->stamps(new Circle(-$c,-$a*$c/(-$c+$b),6,'blue','white'));


@figs = (0..4);
for ($i = 0; $i < 5; $i++) {
  $figs[$i] = image(insertGraph($graphs[$i]), width=>$gsize/2, height=>$gsize/2, tex_size=>250 );
}


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
$BCENTER
\{ 
BeginTable().
  AlignedRow([$figs[0], $figs[1], $figs[2]]).
  TableSpace(5,0).
  AlignedRow(["A", "B", "C"]).
  TableSpace(25,6).
EndTable()
\}
\{
BeginTable().
  AlignedRow([$figs[3], $figs[4]]).
  TableSpace(5,0).
  AlignedRow(["D", "E"]).
EndTable();
\}
$ECENTER 
$PAR

Determine the following information given that 
$PAR
\[$dispfun\]
$PAR
Separate multiple answers by commas. If an asymptote, hole, or intercept does not exist, write ${BBOLD}none${EBOLD}. Note that you may click a graph to enlarge it.
$PAR
(a) Horizontal Asymptote(s): \( y = \) \{ans_rule(20)\}
$PAR
(b) Hole(s): \{ans_rule(20)\}(Type an ordered pair.)
$PAR
(c) Vertical Asymptote(s): \(x = \) \{ans_rule(20)\}
$PAR
(d) \(x\)-intercept(s): \{ans_rule(20)\} (Type an ordered pair.)
$PAR
(e) \(y\)-intercept: \{ans_rule(20)\} (Type an ordered pair.)
$PAR
(f) Letter Corresponding to Graph: \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
Context("Numeric");
$hori = List(1);
ANS($hori->cmp());

setFracListPoints();
$xh = Fraction($c)->reduce;
$yh = Fraction($c-$a,$c+$b)->reduce;
$hole = List(Point($xh,$yh));
ANS($hole->cmp(checkFracPoint()));

Context("Numeric");
$vert = List(-$b);
ANS($vert->cmp());

setFracListPoints();
$xint = List(Point($a,0));
ANS($xint->cmp(checkFracPoint()));

$yi = Fraction(-$a,$b);
$yint = Point(0,$yi);
ANS($yint->cmp(checkFracPoint()));

Context()->strings->add(A=>{}, B=>{}, C=>{}, D=>{}, E=>{});
@possletterans = ("A", "B", "C", "D", "E");
$letterans = $possletterans[$pos[0]];
ANS(String($letterans)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} 
  $PAR
  (a) \(y = $hori\)
  $PAR 
  (b) \($hole\)
  $PAR
  (c) \(x = $vert\)
  $PAR
  (d) none
  $PAR
  (e) \($yint\)
  $PAR
  (f) $letterans
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{helpLink("points","Click here for help entering points.")\}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Function of form ((x-a)(x-c))/((x-b)(x-c)). Hole at x = c.');
ENDDOCUMENT();
