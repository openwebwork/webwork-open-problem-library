# DESCRIPTION
# Asks to factoring an expression that has gcf and then is a diff of squares
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Expanding and Factoring')
## KEYWORDS('factoring')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextLimitedPowers.pl",
  "contextPolynomialFactors.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("PolynomialFactors-Strict");
Context()->variables->are(x=>"Real");
Context()->flags->set(singleFactors=>0);

LimitedPowers::OnlyIntegers(
minPower => 0, maxPower => 1,
message => "either 0 or 1",
);

$a = random(2,6);
$a2 = ($a)**2;
$b = random(2,12);
do {$c = random(2,6)} until (gcd($a,$c) == 1);
$c2 = ($c)**2;
@vars = ("x","y","z","a","b","c");
$ch1 = random(0,3,4);
$ch2 = $ch1+random(1,2,1);
$v1 = $vars[$ch1];
$v2 = $vars[$ch2];
Context()->variables->are($v1=>"Real", $v2=>"Real");

$e1 = $a2*$b;
$e2 = $c2*$b;
$disp = "$e1 $v1 $v2^2 - $e2  $v1";
$gcf = Formula("$b $v1")->reduce;
$fac = Formula("($a $v2 - $c)($a $v2 + $c)")->reduce;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Factor out the greatest common factor first and place it in front. Then factor the remaining expression as much as possible, and type your result in the second box:
$PAR
$BCENTER
\( $disp  =  \)  \{ans_rule(10)\}   \{ ans_rule(30) \}   
$ECENTER
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($gcf->cmp());
ANS($fac->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \(($gcf)($fac)\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  $BBOLD Note: $EBOLD
  Remember to place parentheses around each of your factors.
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
