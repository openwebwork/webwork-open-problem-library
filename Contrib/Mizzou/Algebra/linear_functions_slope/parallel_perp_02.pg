## DBsubject('Algebra')
## DBchapter()
## DBsection()
## KEYWORDS()
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction-NoDecimals");
do {
  $a = random(2,15)*random(-1,1,2);
  $c = random(2,9);
} until (gcd($a,$c) == 1);
$b = non_zero_random(-15,15);

$case2 = random(0,1,1);
$m1 = ($case2 == 0) ? Compute("$a") : Compute("$a/$c");
$mpara = Compute("$m1");
$mperp = Compute("-1/$m1");   
Context()->texStrings;
$disp = "y = $m1 x + $b";


###########################################################################
# state the problem 
###########################################################################
BEGIN_TEXT
Given the line 
$PAR
\[
$disp
\]
$PAR 
determine the slope of a line that is parallel and then also determine the slope of a line that is perpendicular.
$PAR
Parallel:\{ans_rule(10)\}
$PAR
Perpendicular: \{ans_rule(10)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($mpara->cmp(studentsMustReduceFractions=>1));
ANS($mperp->cmp(studentsMustReduceFractions=>1));


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} parallel: \($mpara\), perpendicular: \($mperp\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
