##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
PeriodicRerandomization("3");


###################################
# Setup

Context("Numeric");


$a = random(2,5,1);
$b = 10**$a;

$equation = "10^{$a} = $b";
$texanswer = "\( \log($b) = $a\)";




###################################
# Main text

Context()->texStrings;
BEGIN_TEXT

Write the following exponential equation as an equivalent logarithmic equation:
$PAR
\[
$equation.
\]
$PAR
$BR
The equivalent equation is: $SPACE \(\log \big( \) \{ans_rule(3)\} \( \big) = \) \{ans_rule(3)\}.

END_TEXT


if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    $texanswer
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 



###################################
# Answers

$showPartialCorrectAnswers = 1;


ANS(Compute($b)->cmp() );
ANS(Compute($a)->cmp() );

COMMENT('MathObject version');
ENDDOCUMENT();
