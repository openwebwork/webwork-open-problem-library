# DESCRIPTION
# Solve a linear equation of the form a(x - b) = c - (x - d), where a,b are positive 
# decimals and b,d are positive integers. Decimal answers are allowed.
# ENDDESCRIPTION

## DBsubject('Algebra') 
## DBchapter('Equations and Inequalities');
## DBsection('Linear Equations') 
## KEYWORDS('linear', 'equations')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextFraction.pl",
  "MUHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
PeriodicRerandomization("3"); 


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Fraction");
Context()->strings->add("no solutions"=>{}, "infinitely many"=>{}, "no solution"=>{alias=>"no solutions"}, "none"=>{alias=>"no solutions"}, "all reals"=>{alias=>"infinitely many"});
Context()->variables->are(x=>"Real", X=>"Real");

$a = random(2,5,1);
$b = random(6,9,1);
$c = random(6,9,1);
$d = random(2,5,1);
$adec = $a/10;
$cdec = $c/10;

$eqn = "$adec (x - $b) = $cdec (x - $d)";

$num = -($a*$b - $c*$d);
$den = $c - $a;
$answer = Fraction($num,$den);


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \(x\):
$PAR \[ $eqn \] $PAR
\( x = \) \{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp(studentsMustReduceFractions=>1));


##########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \(x = $answer\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{ MUHelp("lineareqns") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus();

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Solve a linear equation of the form a(x - b) = c - (x - d), where a,b are positive decimals and b,d are positive integers. $BR Decimal answers are allowed.');
ENDDOCUMENT();
