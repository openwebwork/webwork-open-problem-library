##DESCRIPTION
##  Draws a line and asks for the x and y intercepts.
##  The intercepts cannot be the origin.
##ENDDESCRIPTION

## DBsubject('Algebra') 
## DBchapter('Coordinates and Graphs') 
## DBsection('Lines')
## KEYWORDS('linear', 'x-intercepts', 'y-intercepts')
## Date('Summer 2012')
## Author1('Rick Lynch')
## Author2('Teri Christiansen')
## Institution('University of Missouri')
## TitleText1('College Algebra')
## EditionText1('4')
## AuthorText1('Beecher, Penna, Bittinger')
## Section1('1.1')


##################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGgraphmacros.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$refreshCachedImages = 1;
$showPartialCorrectAnswers = 1;
PeriodicRerandomization("3");


###################################
# Setup

Context("Point");
$x1 = non_zero_random(-5,5,1);
$y2 = non_zero_random(-5,5,1);
$m = -$y2/$x1;

$xmin = -6;
$xmax = 6;
$ymin = $m*$xmin + $y2;
$ymax = $m*$xmax+$y2;
if ($ymin < -6) {
        $ymin = -6;
        $xmin = ($ymin - $y2)/$m;
} elsif ($ymin > 6) {
        $ymin = 6;
        $xmin = ($ymin - $y2)/$m;
}

if ($ymax < -6) {
        $ymax = -6;
        $xmax = ($ymax - $y2)/$m;
} elsif ($ymax > 6) {
        $ymax = 6;
        $xmax = ($ymax - $y2)/$m;
}

$gr = init_graph(-6,-6,6,6, axes=>[0,0], grid=>[12,12], size=>[350,350]);
$gr->moveTo($xmin,$ymin);
$gr->arrowTo($xmax,$ymax,'blue',3);
$gr->moveTo($xmax,$ymax);
$gr->arrowTo($xmin,$ymin,'blue',3);
$xint = Point($x1,0);
$yint = Point(0,$y2);

###################################
# problem statement

Context()->texStrings;
BEGIN_TEXT
Find the \(x\)-intercept and \(y\)-intercept of the given graph.
$PAR
$BCENTER
\{ image( insertGraph($gr), width=>350, height=>350, tex_size=>400, extra_html_tags=>'alt="Click to enlarge."' ) \}
$ECENTER
$PAR
\(x\)-intercept: \{ ans_rule(20) \} 
$PAR
\(y\)-intercept: \{ ans_rule(20) \} 
END_TEXT

if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    The \(x\)-intercept is \($xint\) and the \(y\)-intercept is \($yint\).
    $PAR
    END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{ AnswerFormatHelp("points", "Click here for help entering points as answers.") \}
  $BR
  END_TEXT
}

Context()->normalStrings;

PeriodicStatus();


###################################
# computer answer

ANS($xint->cmp());
ANS($yint->cmp());
COMMENT('determine intercepts from graph, intercepts cannot be the origin');
ENDDOCUMENT();
