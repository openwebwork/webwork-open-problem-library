########################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");

#######################################
#  Set-up
$a = random(2,10,1);
do {$b = non_zero_random(-10,10,1)} until (gcd($a,$b) ==1);
$c = random(2,10,1);
do {$d = non_zero_random(-10,10,1)} until (gcd($c,$d) ==1);

$f = " \dfrac{$a x + $b}{$c x + $d} ";

$ans = Compute(" ($d x - $b)/($a - $c x)");
$num = Compute("$d x - $b")->reduce;
$den = Compute("$a - $c x")->reduce;

#Context()->strings->add("undefined");
#ANS (String("undefined")->cmp() );

ANS( $ans->cmp() );


################################################
#  Main text

BEGIN_TEXT
Determine whether the following function is one-to-one on its domain.  If it is one-to-one, find its inverse function \(f^{-1}(x) \).  If it is not-one-to-one, write "undefined" in the blank provided.  You do not need to simplify your answer.

$PAR $SPACE \(f(x) = $f\) 
$PAR $SPACE \(f^{-1}(x) = \) \{ans_rule(10)\}
END_TEXT

Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
    BEGIN_TEXT
    $PAR
    $BBOLD Answer: $EBOLD
    The function \(f(x) \) is one-to-one and has inverse \(f^{-1}(x) = \dfrac{$num}{$den}\)
    $PAR
    END_TEXT
} else {
    BEGIN_TEXT
    $BR
    END_TEXT
}

Context()->normalStrings;

PeriodicStatus(); 




