# DESCRIPTION
# Asks to determine the speed a boat and the current given distance and time.
# ENDDESCRIPTION

## DBsubject('Algebra') 
## DBchapter('Systems of Equations and Inequalities')
## DBsection('Systems of Linear Equations')
## KEYWORDS('algebra, application of linear equations', 'systems of linear equations', 'equations')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
$bspd = random(15,35,1);
$cspd = random(2,8,1);
$t1 = random(2,5);
$t2 = $t1 + random(1,3);
$d1 = ($bspd+$cspd)*$t1;
$d2 = ($bspd-$cspd)*$t2;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Justin's boat travels $d1 km downstream in $t1 hours and it travels $d2 km upstream in $t2 hours. Find the speed of the boat in still water and the speed of the stream's current.
$PAR
Boat Speed: \{ans_rule(8)\} km/h
$BR
Current Speed: \{ans_rule(8)\} km/h
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS(Compute($bspd)->cmp());
ANS(Compute($cspd)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} boat: $bspd km/h and current: $cspd km/h
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus();

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Asks to determine the speed a boat and the current given distance and time.');
ENDDOCUMENT();
