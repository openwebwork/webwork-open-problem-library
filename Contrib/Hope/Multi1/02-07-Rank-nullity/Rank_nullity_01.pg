DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserPopUp.pl",
"MatrixReduce.pl",
"MatrixUnits.pl",
"PGcourse.pl",
"parserPopUp.pl",
);
$showPartialCorrectAnswers = 1;
TEXT(beginproblem()); 

Context('Matrix');
Context()->noreduce('(-x)-y');

$B = GL3Z();

$i = random(1,5,1);

if ($i == 1) {

$Areduced = Matrix([
[ 1, random(-3,3,1), random(-3,3,1), random(-3,3,1), random(-3,3,1) ],
[ 0, 1, random(-3,3,1), random(-3,3,1), random(-3,3,1) ],
[ 0, 0, 1, random(-3,3,1), random(-3,3,1) ],
]);

} elsif ($i == 2) {

$Areduced = Matrix([
[ 1, random(-3,3,1), 0, random(-3,3,1), random(-3,3,1) ],
[ 0, 1, 0, random(-3,3,1), random(-3,3,1) ],
[ 0, 0, 0, 1, random(-3,3,1) ],
]);

} elsif ($i == 3) {

$Areduced = Matrix([
[ 1, random(-3,3,1), 0, random(-3,3,1), random(-3,3,1) ],
[ 0, 1, 0, random(-3,3,1), random(-3,3,1) ],
[ 0, 0, 0, 0, 1 ],
]);

} elsif ($i == 4) {
$Areduced = Matrix([
[ 1, random(-3,3,1), random(-3,3,1), random(-3,3,1), random(-3,3,1) ],
[ 0, 0, 1, random(-3,3,1), random(-3,3,1) ],
[ 0, 0, 0, 1, random(-3,3,1) ],
]);

} else {

$Areduced = Matrix([
[ 1, random(-3,3,1), random(-3,3,1), random(-3,3,1), random(-3,3,1) ],
[ 0, 0, 1, random(-3,3,1), random(-3,3,1) ],
[ 0, 0, 0, 0, 1 ],
]);

}

$A = $B * $Areduced;

$rank = Compute("3");
$nullity = Compute("2");

$popup = PopUp(['choose','the number of columns of A','the number of rows of A'],'the number of columns of A');

Context()->texStrings;
BEGIN_TEXT
Find the rank and the nullity of the matrix 
\[
A = $A.
\]
\( rank(A) = \) \{ $rank->ans_rule(10) \}
$BR 
\( nullity(A) = \) \{ $nullity->ans_rule(10) \}
$BR
\( rank(A) + nullity(A) = \) \{ $popup->menu \}
END_TEXT
Context()->normalStrings;

ANS($rank->cmp);
ANS($nullity->cmp);
ANS($popup->cmp);

COMMENT('MathObject version.  Always rank = 3 and nullity = 2.  Where the pivots occur in the reduced row echelon form is randomized.');

ENDDOCUMENT();
