DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserPopUp.pl",
"MatrixReduce.pl",
"MatrixUnits.pl",
"PGcourse.pl",
"parserPopUp.pl",
);
$showPartialCorrectAnswers = 1;
TEXT(beginproblem()); 

Context('Matrix');
Context()->noreduce('(-x)-y');

$B = GL4Z();

$i = random(1,3,1);

if ($i == 1) {

$Areduced = Matrix([
[ 1, random(-3,3,1), random(-3,3,1), random(-3,3,1) ],
[ 0, 1, random(-3,3,1), random(-3,3,1) ],
[ 0, 0, 1, random(-3,3,1) ],
[ 0, 0, 0, 0 ],
]);

} elsif ($i == 2) {

$Areduced = Matrix([
[ 1, random(-3,3,1), random(-3,3,1), random(-3,3,1) ],
[ 0, 1, random(-3,3,1), random(-3,3,1) ],
[ 0, 0, 1, random(-3,3,1) ],
[ 0, 0, 0, 0 ],
]);

} else {

$Areduced = Matrix([
[ 1, random(-3,3,1), random(-3,3,1), random(-3,3,1) ],
[ 0, 0, 1, random(-3,3,1) ],
[ 0, 0, 0, 1 ],
[ 0, 0, 0, 0 ],
]);

}

$A = $B * $Areduced;

$rank = Compute("3");
$nullity = Compute("1");

$popup = PopUp(['choose','invertible','not invertible'],'not invertible');

Context()->texStrings;
BEGIN_TEXT
Find the rank and the nullity of the matrix 
\[
A = $A.
\]
\( rank(A) = \) \{ $rank->ans_rule(10) \}
$BR 
\( nullity(A) = \) \{ $nullity->ans_rule(10) \}
$BR
$BR
Using your previous answers, is the matrix \( A \) invertible?
\{ $popup->menu \}
END_TEXT
Context()->normalStrings;

ANS($rank->cmp);
ANS($nullity->cmp);
ANS($popup->cmp);
COMMENT('MathObject version.  Always rank = 3 and nullity = 1.  Where the pivots occur in the reduced row echelon form is randomized.');

ENDDOCUMENT();
