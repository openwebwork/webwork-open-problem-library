DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserPopUp.pl",
"MatrixReduce.pl",
"MatrixUnits.pl",
"PGcourse.pl",
);
$showPartialCorrectAnswers = 1;
TEXT(beginproblem()); 

Context('Matrix')->variables->are('w'=>'Real','x'=>'Real','y'=>'Real','z'=>'Real',);
Context()->noreduce('(-x)-y','(-x)+y');

@a = GL3Z_perl();
$A = Matrix(@a);

do {

@Breduced = (
non_zero_random(-5,5,1),
non_zero_random(-5,5,1),
0,
);

} until ( 
($Breduced[0] != $Breduced[1]) and 
($Breduced[0] != $Breduced[2]) and 
($Breduced[1] != $Breduced[2]) 
);

@mreduced = (
[ 1, non_zero_random(-5,5,1), 0, non_zero_random(-5,5,1), $Breduced[0] ],
[ 0, 0, 1, non_zero_random(-5,5,1), $Breduced[1] ],
[ 0, 0, 0, 0, $Breduced[2] ],
);
$Mreduced = Matrix(@mreduced);

$M = $A * $Mreduced;

@m = $M->value;

$b[0] = $M->element(1,5);
$b[1] = $M->element(2,5);
$b[2] = $M->element(3,5);

foreach my $i (0..2) {
  $expr[$i] = Formula("$m[$i][0] * w + $m[$i][1] * x + $m[$i][2] * y + $m[$i][3] * z")->reduce;
}

$x = Matrix([
["$mreduced[0][4] - $mreduced[0][3] * z - $mreduced[0][1] * x"],
["x"],
["$mreduced[1][4] - $mreduced[1][3] * z"],
["z"],
]);

Context()->texStrings;
BEGIN_TEXT
Given 
\[
$M \sim $Mreduced,
\]
use the reduced row echelon form above to solve the system 
\[
\left\lbrace
\begin{array}{rcr}
$expr[0] & = & $b[0] \\
$expr[1] & = & $b[1] \\
$expr[2] & = & $b[2] 
\end{array}
\right.
\]
If necessary, parametrize your answer using the free variables of the system.
$BR
$BR
\( \left\lbrack \begin{array}{c} w \\ x \\ y \\ z \end{array} \right\rbrack = \) 
\{ $x->ans_array(30) \}
END_TEXT
Context()->normalStrings;

ANS($x->cmp);

COMMENT('MathObject version.  Correct answer has two free variables (x and z).  Only one parametrization is marked correct (the standard parametrization with x = x and z = z that uses the reduced echelon form to solve for w and y).');

ENDDOCUMENT();
