## Problem1('')

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserPopUp.pl",
"MatrixReduce.pl",
"PGcourse.pl",
);
$showPartialCorrectAnswers = 1;
TEXT(beginproblem()); 

Context('Fraction-NoDecimals');
Context()->parens->set("[" => {formMatrix => 1});
Context()->variables->are(
'x1'=>'Real',
'x2'=>'Real',
'x3'=>'Real',
);
Context()->noreduce('(-x)-y','(-x)+y');


do {

foreach my $i (1..3) {
  foreach my $j (1..4) {
     $a[$i][$j] = non_zero_random(-3,3,1);
  }
}

$A = Matrix([
[ $a[1][1], $a[1][2], $a[1][3] ],
[ $a[2][1], $a[2][2], $a[2][3] ],
[ $a[3][1], $a[3][2], $a[3][3] ],
]);

$b = Matrix([ $a[1][4], $a[2][4], $a[3][4] ])->transpose;


$M = Matrix([
[ $a[1][1], $a[1][2], $a[1][3], $a[1][4] ],
[ $a[2][1], $a[2][2], $a[2][3], $a[2][4] ],
[ $a[3][1], $a[3][2], $a[3][3], $a[3][4] ],
]);

$M = apply_fraction_to_matrix_entries($M);

$Mreduced = rref($M);

$x = Matrix([
[Fraction($Mreduced->element(1,4))],
[Fraction($Mreduced->element(2,4))],
[Fraction($Mreduced->element(3,4))],
]);

} until (
($A->det != 0) and 
($x->element(1,1) != 0) and 
($x->element(2,1) != 0) and 
($x->element(3,1) != 0) and
($x->element(1,1) != round(Real($x->element(1,1)))) and 
($x->element(2,1) != round(Real($x->element(2,1)))) and 
($x->element(3,1) != round(Real($x->element(3,1))))
);

$expr[1] = Formula("$a[1][1] x1 + $a[1][2] x2 + $a[1][3] x3")->reduce;
$expr[2] = Formula("$a[2][1] x1 + $a[2][2] x2 + $a[2][3] x3")->reduce;
$expr[3] = Formula("$a[3][1] x1 + $a[3][2] x2 + $a[3][3] x3")->reduce;

Context()->texStrings;
BEGIN_TEXT
Solve the system of equations.
Your answers must be fractions (decimals are not allowed).
\[
\left\lbrace
\begin{array}{rcr}
$expr[1] & = & $a[1][4] \\
$expr[2] & = & $a[2][4] \\
$expr[3] & = & $a[3][4]
\end{array}
\right.
\]
$BR
\( \vec{x} = \) \{ $x->ans_array(10) \}.
END_TEXT
Context()->normalStrings;

ANS($x->cmp);

COMMENT('MathObject version.  Answer is always unique.  The vector x always has entries that are rational but not integral.');

ENDDOCUMENT();
