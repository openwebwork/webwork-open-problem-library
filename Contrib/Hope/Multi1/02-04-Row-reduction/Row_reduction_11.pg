DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "MatrixReduce.pl",
  "PGcourse.pl"
);
$showPartialCorrectAnswers = 1;
TEXT(beginproblem()); 

Context('Fraction-NoDecimals');
Context()->parens->set("[" => {formMatrix => 1});
Context()->variables->are(
'x1'=>'Real',
'x2'=>'Real',
);
Context()->noreduce('(-x)-y','(-x)+y');

do {

foreach my $i (1..2) {
  foreach my $j (1..4) {
     $a[$i][$j] = non_zero_random(-4,4,1);
  }
}

$A = Matrix([
[ $a[1][1], $a[1][2] ],
[ $a[2][1], $a[2][2] ],
]);

$b = Matrix([ $a[1][4], $a[2][4] ])->transpose;


$M = Matrix([
[ $a[1][1], $a[1][2], $a[1][3], $a[1][4] ],
[ $a[2][1], $a[2][2], $a[2][3], $a[2][4] ],
]);

$M = apply_fraction_to_matrix_entries($M);

$Mreduced = rref($M);

$x[1] = Matrix([
[$Mreduced->element(1,3)],
[$Mreduced->element(2,3)],
]);

$x[2] = Matrix([
[$Mreduced->element(1,4)],
[$Mreduced->element(2,4)],
]);

} until (
($A->det != 0) and 
($x[1]->element(1,1) != 0) and 
($x[1]->element(2,1) != 0) and 
($x[1]->element(1,1) != round(Real($x[1]->element(1,1)))) and 
($x[1]->element(2,1) != round(Real($x[1]->element(2,1)))) 
);

$expr[1] = Formula("$a[1][1] x1 + $a[1][2] x2")->reduce;
$expr[2] = Formula("$a[2][1] x1 + $a[2][2] x2")->reduce;

Context()->texStrings;
BEGIN_TEXT
(a) Find the reduced row echelon form of the matrix \( M \).
Your answers must be fractions (decimals are not allowed).
\[ M = $M. \]
$BR
$BCENTER
\{ $Mreduced->ans_array(10) \}.
$ECENTER
$BR
$BR
(b) Solve the system
\[
\left\lbrace
\begin{array}{rcr}
$expr[1] & = & $a[1][3] \\
$expr[2] & = & $a[2][3] 
\end{array}
\right.
\]
\( \vec{x} = \) \{ $x[1]->ans_array(10) \}.
$BR
$BR
(c) Solve the system
\[
\left\lbrace
\begin{array}{rcr}
$expr[1] & = & $a[1][4] \\
$expr[2] & = & $a[2][4] 
\end{array}
\right.
\]
\( \vec{x} = \) \{ $x[2]->ans_array(10) \}.
END_TEXT
Context()->normalStrings;

ANS( $Mreduced->cmp() );

ANS($x[1]->cmp);
ANS($x[2]->cmp);

COMMENT('MathObject version.  Answer is always unique.  The vector x always has some entries that are rational but not integral.');

ENDDOCUMENT();
