DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserPopUp.pl",
"MatrixReduce.pl",
"MatrixUnits.pl",
"PGcourse.pl",
);
$showPartialCorrectAnswers = 1;
TEXT(beginproblem()); 

Context('Matrix')->variables->are('x'=>'Real','y'=>'Real','z'=>'Real',);
Context()->noreduce('(-x)-y','(-x)+y');

@a = GL3Z_perl();
$A = Matrix(@a);

do {

@Breduced = (
non_zero_random(-5,5,1),
non_zero_random(-5,5,1),
non_zero_random(-5,5,1),
);

} until ( 
($Breduced[0] != $Breduced[1]) and 
($Breduced[0] != $Breduced[2]) and 
($Breduced[1] != $Breduced[2]) 
);

$Mreduced = Matrix([
[ 1, 0, 0, $Breduced[0] ],
[ 0, 1, 0, $Breduced[1] ],
[ 0, 0, 1, $Breduced[2] ],
]);

$M = $A * $Mreduced;

$b[0] = $M->element(1,4);
$b[1] = $M->element(2,4);
$b[2] = $M->element(3,4);

foreach my $i (0..2) {
  $expr[$i] = Formula("$a[$i][0] * x + $a[$i][1] * y + $a[$i][2] * z")->reduce;
}

$x = Matrix(@Breduced)->transpose;

Context()->texStrings;
BEGIN_TEXT
Given 
\[
$M \sim $Mreduced,
\]
use the reduced row echelon form above to solve the system
\[
\left\lbrace
\begin{array}{rcr}
$expr[0] & = & $b[0] \\
$expr[1] & = & $b[1] \\
$expr[2] & = & $b[2] 
\end{array}
\right.
\]
If necessary, parametrize your answer using the free variables of the system.
$BR
$BR
\( \left\lbrack \begin{array}{c} x \\ y \\ z \end{array} \right\rbrack = \)  
\{ $x->ans_array(30) \}
END_TEXT
Context()->normalStrings;

ANS($x->cmp);

COMMENT('MathObject version.  Unique solution');

ENDDOCUMENT();
