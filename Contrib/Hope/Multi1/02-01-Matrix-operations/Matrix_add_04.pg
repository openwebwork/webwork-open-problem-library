DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);
$showPartialCorrectAnswers = 0;
TEXT(beginproblem()); 

Context('Matrix');

$A = Matrix([
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
]);

$k1 = random(2,5,1);
$k2 = random(2,5,1);
$k = $k1 + $k2;

$popup = PopUp(['Choose','True','False'],'True');

Context()->texStrings;
BEGIN_TEXT
Let 
\[ A = $A.\]
If possible, compute the following.  
If an answer does not exist, enter ${BBOLD}DNE${EBOLD}.
$BR
$BR
\(  $k1 A + $k2 A = \)
\{ ans_box(3,30).$SPACE.AnswerFormatHelp('matrices') \}
$BR
$BR
\( $k A = \)
\{ ans_box(3,30).$SPACE.AnswerFormatHelp('matrices') \}
$BR
$BR
\{ $popup->menu \} True or False: \( (r_1 + r_2) A = r_1 A + r_2 A \) for any two real 
numbers \( r_1 \) and \( r_2 \) and any matrix \( A \).
END_TEXT
Context()->normalStrings;

install_problem_grader(~~&std_problem_grader);

ANS( ($k * ($A) )->cmp() );
ANS( ($k * ($A) )->cmp() );
ANS( $popup->cmp );

COMMENT('MathObject version.');

