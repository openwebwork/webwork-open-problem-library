  $correct1 = "cf(x)+cg(x)";
  $correct2 = "c*f(x)+cg(x)";
  $correct3 = "cf(x)+c*g(x)";
  $correct4 = "c*f(x)+c*g(x)";
  $student =~ s/ //g; # ditto
  if (($student eq $correct1) or ($student eq $correct2) or ($student eq $correct3) or ($student eq $correct4)) { return 1; } else { return 0; } 
}));


