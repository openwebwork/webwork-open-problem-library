loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "MatrixUnits.pl",
  "unionLists.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$I2 = Value::Matrix->I(2);
$I3 = Value::Matrix->I(3);

do {

$A = Matrix([
[random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1)],
]);

$B = GL2Z();
$C = GL2Z();

} until (
($B != $I2) and
($C != $I2) and
($B != $C) and
($A != $I2)
);

($n,$n) = $B->dimensions;
($m,$m) = $C->dimensions;

#$CinvAB = ($C->inverse) * $A * $B;
$BinvAB = ($B->inverse) * $A * $B;
$CinvAC = ($C->inverse) * $A * $C;

$CinvB = ($C->inverse) * $B;
$BinvC = ($B->inverse) * $C;



$b1 = Vector($B->column(1));
$b2 = Vector($B->column(2));

$c1 = Vector($C->column(1));
$c2 = Vector($C->column(2));


Context()->texStrings;
BEGIN_TEXT
Let \( f : \mathbb{R}^{$n} \to \mathbb{R}^{$m} \) be the linear transformation defined by
\[
f(\vec{x}) = $A \vec{x}
\]
relative to the standard basis in the domain and the codomain.
Let
\[
\begin{array}{lcl}
\mathcal{B} & = & \lbrace $b1, $b2 \rbrace, \\
\mathcal{C} & = & \lbrace $c1, $c2 \rbrace,
\end{array}
\]
be two different bases for \( \mathbb{R}^{$n} \), where the coordinate vectors are expressed relative to the standard basis.
\{ BeginList('OL',type=>'a') \}

$ITEM
Find the matrix \( \lbrack f \rbrack_{\mathcal{B}}^{\mathcal{B}} \) for \( f \) relative to the basis \( \mathcal{B} \).
$BR
$BR
\( \lbrack f \rbrack_{\mathcal{B}}^{\mathcal{B}} = \) \{ $BinvAB->ans_array(10) \}


$ITEMSEP
$ITEM
Find the matrix \( \lbrack f \rbrack_{\mathcal{C}}^{\mathcal{C}} \) for \( f \) relative to the basis \( \mathcal{C} \).
$BR
$BR
\( \lbrack f \rbrack_{\mathcal{C}}^{\mathcal{C}} = \) \{ $CinvAC->ans_array(10) \}

$ITEMSEP
$ITEM
Find the transition (or change of basis) matrix \( \lbrack id \rbrack_{\mathcal{C}}^{\mathcal{B}} \) from \( \mathcal{C} \)-coordinates to \( \mathcal{B} \)-coordinates.
$BR
$BR
\( \lbrack id \rbrack_{\mathcal{C}}^{\mathcal{B}} = \) \{ $BinvC->ans_array(10) \}

$ITEMSEP
$ITEM
Find the transition (or change of basis) matrix \( \lbrack id \rbrack_{\mathcal{B}}^{\mathcal{C}} \) from \( \mathcal{B} \)-coordinates to \( \mathcal{C} \)-coordinates.  
(Note: \( \lbrack id \rbrack_{\mathcal{B}}^{\mathcal{C}} = \left( \lbrack id \rbrack_{\mathcal{C}}^{\mathcal{B}} \right)^{-1} \).)
$BR
$BR
\( \lbrack id \rbrack_{\mathcal{B}}^{\mathcal{C}} = \) \{ $CinvB->ans_array(10) \}

$ITEMSEP
$ITEM
On paper, check that 
\( 
\lbrack id \rbrack_{\mathcal{B}}^{\mathcal{C}}
\lbrack f \rbrack_{\mathcal{B}}^{\mathcal{B}}
\lbrack id \rbrack_{\mathcal{C}}^{\mathcal{B}}
=
\lbrack f \rbrack_{\mathcal{C}}^{\mathcal{C}}
\).

\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;

ANS( $BinvAB->cmp );
ANS( $CinvAC->cmp );

ANS( $BinvC->cmp );
ANS( $CinvB->cmp );

