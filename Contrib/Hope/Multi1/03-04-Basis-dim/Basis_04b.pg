## DBsubject(Linear algebra)
## DBchapter(Euclidean spaces)
## DBsection(Basis and dimension)
## Date(July 2013)
## Institution(Hope College)
## Author(Paul Pearson)
## KEYWORDS('linear algebra','vector space','subspaces')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "MatrixUnits.pl",
  "MatrixReduce.pl",
  "MatrixCheckers.pl",
  "VectorListCheckers.pl",
  "parserPopUp.pl",
  "unionLists.pl",
  "answerHints.pl",
  "PGcourse.pl"
);
install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 1;
$refreshCachedImages = 1;
TEXT(beginproblem()); 

Context('Fraction');
Context('Fraction')->parens->set("[" => {formMatrix => 1});

$n = 3;

do {

$U = GL3Z();
$V = GL3Z();

$A = Matrix([
[1,-3,1],
[2,-2,1],
[3,2,1], # row 3 = row1 - row 2
]);
$A = $U * $V * $A;
$A = Matrix([
[$A->element(1,1),$A->element(1,2)],
[$A->element(2,1),$A->element(2,2)],
[$A->element(3,1),$A->element(3,2)],
]);

} until (($A->element(3,1) != 0) or ($A->element(3,2) != 0));

$Afrac = apply_fraction_to_matrix_entries($A);
$Ared = rref($Afrac);

$Adim = Real(2);
$Abasis = PopUp(['choose',"basis for R^$n","not a basis for R^$n"],"not a basis for R^$n");


Context()->texStrings;
BEGIN_TEXT
Let \[ A = $A, \]
let \(\vec{a}_1 \) and \( \vec{a}_2\) be the columns of \( A \),
let \( \mathcal{B} = \lbrace \vec{a}_1, \vec{a}_2 \rbrace \) and let \( H = \mathrm{span}(\mathcal{B}) \).
$BR
$BR
\{ BeginList('OL',type=>'a') \}
$ITEM The number of vectors in \( \mathcal{B} \) is \{ ans_rule(10) \}.
$ITEMSEP

$ITEM The number of vectors in \( H \) is \{ ans_rule(10) \}.
$ITEMSEP

$ITEM The dimension of the subspace \( H \) is \{ ans_rule(10) \}.
$ITEMSEP

$ITEM Is \( \mathcal{B} \) a basis for \( \mathbb{R}^{$n} \)? \{ $Abasis->menu \}  Be sure you can explain and justify your answer.
$ITEMSEP
END_TEXT
Context()->normalStrings;

ANS(Compute("2")->cmp);
ANS(Compute("infinity")->cmp->withPostFilter(AnswerHints( 
  Compute("2") => "Hint: What is the definition of the span of a set of vectors?",
)));
ANS($Adim->cmp);
ANS($Abasis->cmp);

########################################

Context('Vector');

$A1 = Vector($A->column(1));
$A2 = Vector($A->column(2));
$Abasisvects = List($A1,$A2);

Context()->texStrings;
BEGIN_TEXT
$ITEM A basis for the subspace \( H \) is 
\( \big\lbrace \) 
\{ ans_rule(40) \} 
\( \big\rbrace \). 
Enter a column vector such as \( \left\lbrack \begin{array}{r} 1 \\ 2 \\ 3 \end{array} \right\rbrack \) using the syntax \( \verb+<1,2,3>+ \).  
If there is more than vector in your basis, enter a comma separated list such as \( \verb+<1,2,3>,<4,5,6>+ \).
\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;

ANS($Abasisvects->cmp(list_checker=>~~&basis_checker_list_of_vectors) );

COMMENT('MathObject version.  Answer is always dimension 2.');
ENDDOCUMENT();
