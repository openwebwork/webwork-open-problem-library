## KEYWORDS('linear algebra','vector space','subspaces')

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"MatrixUnits.pl",
"parserMultiAnswer.pl",
"PGcourse.pl",
);

$showPartialCorrectAnswers = 0;
$refreshCachedImages = 1;
TEXT(beginproblem()); 

Context('Matrix')->variables->are('v1'=>'Real','v2'=>'Real');
Context()->variables->set(v1 => {TeX => "\vec{v}_1"}, v2 => {TeX => "\vec{v}_2"}, );
Context()->flags->set(
      formatStudentAnswer=>'parsed'
);

do {

$A = Matrix([
[random(-5,5,1),random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1),random(-5,5,1)],
[random(-5,5,1),random(-5,5,1),random(-5,5,1)],
]);

} until ($A->det != 0);

$A1 = $A->column(1);
$A2 = $A->column(2);

$b = $A->column(3);

$A1vec = Vector($A1);
$A2vec = Vector($A2);

$bvec = Vector($b);

$answer = Compute("DNE");

Context()->texStrings;
BEGIN_TEXT
Let \[ \vec{w} = $bvec, \ \vec{v}_1 = $A1vec, \ \vec{v}_2 = $A2vec. \]
If possible, express \( \vec{w} \) as a linear combination of the vectors \( \vec{v}_1 \) and \( \vec{v}_2 \).
Otherwise, enter ${BITALIC}DNE${EITALIC}.
For example, the answer \( \vec{w} = 4 \vec{v}_1 + 5 \vec{v}_2 \) would
be entered \( \verb!4v1 + 5v2! \).
$BR
$BR
\( \vec{w} = \) \{ ans_rule(30) \} 
END_TEXT
Context()->normalStrings;

ANS($answer->cmp( typeMatch=>Formula("4v1+5v2") ));

COMMENT('MathObject version.  Answer is always DNE.');
ENDDOCUMENT();