DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);
$showPartialCorrectAnswers = 0;
TEXT(beginproblem()); 

Context('Matrix');

do {

$A = Matrix([
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
[non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1),non_zero_random(-5,5,1)],
]);

} until (($A->row(1) != $A->row(2)) and ($A->row(1) != $A->row(3)) and ($A->row(2) != $A->row(3)));

$i = random(1,3,1);
$k = random(2,9,1);

if ($i == 1) {

  $op = "R_{1} + $k R_{2}  \rightarrow R_{1}";
  $answer = Matrix([
  $A->row(1) + $k*($A->row(2)),
  $A->row(2),
  $A->row(3),
  ]);

} elsif ($i == 2) {

  $op = "R_{2} + $k R_{1}  \rightarrow R_{2}";
  $answer = Matrix([
  $A->row(1),
  $A->row(2) + $k*($A->row(1)),
  $A->row(3),
  ]);

} else {

  $op = "R_{3} + $k R_{2}  \rightarrow R_{3}";
  $answer = Matrix([
  $A->row(1),
  $A->row(2),
  $A->row(3) + $k*($A->row(2)),
  ]);

}


Context()->texStrings;
BEGIN_TEXT
Give the result of applying the row operation \( $op \) to the given matrix.
$BR
$BR
\( $A \mathop{\longrightarrow}^{$op} \)
\{ $answer->ans_array \}
END_TEXT
Context()->normalStrings;

install_problem_grader(~~&std_problem_grader);

ANS( $answer->cmp() );

COMMENT('MathObject version.');

ENDDOCUMENT();
