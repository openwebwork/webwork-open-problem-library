TEXT(beginproblem());

##############################################
#  Setup

Context("ParametricLine");

#
#  The line p+tv
#
$P = non_zero_point3D();
$V = non_zero_vector3D();

$L = ParametricLine($P,$V);


##############################################
#  Main text

$v = '\vec{v}'; # Overline('v');

Context()->texStrings;
BEGIN_TEXT

Write the line through \(p = $P\)
in the direction of \($v = $V\)
in vector parametric form:
$BCENTER
$PAR
\(L(t)\) = \{ans_rule(40)\}.
$ECENTER

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($L->cmp);
$showPartialCorrectAnswers = 1;

