DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");

#
#  The line p+tv
#
$P = non_zero_point3D();
do { $Q = non_zero_point3D(); } until ($Q != $P);

$V = non_zero_vector3D();
do { $W = non_zero_vector3D(); } until ( !($V->isParallel($W)) );

$N = $V->cross($W);
$PQ = Vector( $Q - $P );

$answer = abs($N . $PQ) / norm($N);


##############################################
#  Main text

$v = '\vec{v}'; # Overline('v');

Context()->texStrings;
BEGIN_TEXT

Find the distance between the skew lines
\( P(t) = $P + t $V \) and 
\( Q(t) = $Q + t $W \).  Hint: Take the cross product of
the slope vectors of \( P \) and \( Q \) to find a vector
normal to both of these lines.
$BR
$BR
distance = \{ans_rule(40)\}.

END_TEXT
Context()->normalStrings;

##################################################
#  Answers

ANS($answer->cmp);
$showPartialCorrectAnswers = 1;

##################################################


COMMENT('MathObject version');
ENDDOCUMENT();
