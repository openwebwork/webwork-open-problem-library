DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl",
);


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector");

#
#  The points A, B and C
#
$A = non_zero_point3D();
$B = non_zero_point3D();
$C = non_zero_point3D();

#
#  Vectors in the plane
#
$AB = Vector($B-$A);
$AC = Vector($C-$A);

#
#  The normal vector
#
$N = $AB x $AC;

#
#  Fix it up if AB is parallel to AC
#
if (abs($N) == 0) {
  ($a,$b,$c) = $AB->value;
  if ($a == 0 && $b == 0) {
    $C = $C + Vector(-$c,0,$a);
  } else {
    $C = $C + Vector(-$b,$a,0);
  }
  $AC = Vector($C-$A);
  $N = $AB x $AC;
}

##############################################
#  Main text

$v = '\vec{v}'; # Overline('v');

Context()->texStrings;
BEGIN_TEXT

Find a vector \($v\) that is perpendicular to the plane through the
points
$PAR
$BCENTER
\(A = $A\), \(B = $B\), and \(C = $C\).
$PAR

\($v\) = \{ans_rule(40)\}.
$ECENTER

END_TEXT
Context()->normalStrings;

HINT($BBOLD,"Hint: ",$EBOLD,"If the vector is perpendicular to ",
$BITALIC,"two",$EITALIC," vectors in the plane, it will be",
" perpendicular to them all.  Can you find two vectors in this plane?");

$showHint = 3;

##################################################

ANS($N->cmp(parallel=>1));
$showPartialCorrectAnswers = 1;

##################################################


COMMENT('MathObject version');
ENDDOCUMENT();
