DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "VectorListCheckers.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

$a[1][1] = 0;
$a[2][1] = non_zero_random(-4,4,1);

foreach $i (2..4) {
$a[1][$i] = non_zero_random(-4,4,1);
$a[2][$i] = random(-4,4,1);
}

$k = random(-2,2,1);
$l = random(-2,2,1);

foreach $i (1..4) {
$a[3][$i] = $k*$a[1][$i] + $l*$a[2][$i];
}


$image1 = Matrix([ [$a[1][1]], [$a[2][1]], [$a[3][1]] ]);
$image2 = Matrix([ [$a[1][2]], [$a[2][2]], [$a[3][2]] ]);

@slice = NchooseK(4,4);

@cols = (
[$a[1][1], $a[2][1], $a[3][1]],
[$a[1][2], $a[2][2], $a[3][2]],
[$a[1][3], $a[2][3], $a[3][3]],
[$a[1][4], $a[2][4], $a[3][4]],
);

$A = Matrix(@cols[@slice])->transpose;

$answer = List(Vector($image1),Vector($image2));



Context()->texStrings;
BEGIN_TEXT
Let \[A=$A.\]
$BR
A basis for the column space of \( A \) is
\(\big\lbrace\) 
\{ $answer->ans_rule(40) \}
\(\big\rbrace.\)
You should be able to explain and justify your answer.
$BR
$BR
Enter a column vector such as \( \left\lbrack \begin{array}{r} 1 \\ 2 \\ 3 \end{array} \right\rbrack \) using the syntax \( \verb+<1,2,3>+ \).  
If there is more than vector in your basis, enter a comma separated list such as \( \verb+<1,2,3>,<4,5,6>+ \).
END_TEXT
Context()->normalStrings;

ANS( $answer->cmp(list_checker=>~~&basis_checker_list_of_vectors) );

COMMENT('MathObject version.  Basis always has 2 vectors.');

ENDDOCUMENT();
