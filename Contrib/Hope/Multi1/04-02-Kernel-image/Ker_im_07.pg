DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "MatrixUnits.pl",
  "VectorListCheckers.pl",
  "parserRadioButtons.pl",
  "unionLists.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Matrix');

do {

foreach my $i (1..3) {
  foreach my $j (1..2) {
    $a[$i][$j] = non_zero_random(-5,5,1);
  }
}

$A = Matrix([
[ $a[1][1], $a[1][2] ],
[ $a[2][1], $a[2][2] ],
[ $a[3][1], $a[3][2] ],
]);

} until ( $a[1][1] * $a[2][2] != $a[1][2] * $a[2][1] );

($m,$n) = $A->dimensions;

$x = random(-1,1,2) * random(6,9,1);
$y = random(-1,1,2) * random(6,9,1);


$X = Matrix([
[$x],
[$y]
]);

$AX = $A * $X;

$mc = RadioButtons(
    [ "injective", "surjective", "bijective", "none of these" ],
    "injective",
    last =>     [ "injective", "surjective", "bijective", "none of these" ],
    labels => [ "injective", "surjective", "bijective", "none of these" ], 
);

Context()->texStrings;
BEGIN_TEXT
Let \( f : \mathbb{R}^{$n} \to \mathbb{R}^{$m} \) be the linear transformation determined by 
\[
f
\left( 
\begin{array}{c}
1 \\ 0
\end{array}
\right)
=
\left( 
\begin{array}{r}
$a[1][1] \\ 
$a[2][1] \\ 
$a[3][1] 
\end{array}
\right),
\ \ \ \ \
f
\left( 
\begin{array}{c}
0 \\ 1
\end{array}
\right)
=
\left( 
\begin{array}{r}
$a[1][2] \\ 
$a[2][2] \\ 
$a[3][2] 
\end{array}
\right).
\]

\{ BeginList('OL',type=>'a') \}

$ITEM
Find 
\( \displaystyle
f
\left( 
\begin{array}{c}
$x \\ $y
\end{array}
\right)
\).
$BR
$BR
\( \displaystyle
f
\left( 
\begin{array}{c}
$x \\ $y
\end{array}
\right)
 =
\) 
\{ $AX->ans_array(10) \}.

$ITEMSEP
$ITEM
Find the matrix of the linear transformation \( f \).
$BR
$BR
\( \displaystyle
f
\left( 
\begin{array}{c}
x \\ y
\end{array}
\right)
 = \)
\{ $A->ans_array(10) \}
\( \displaystyle 
\left\lbrack
\begin{array}{c}
x \\ y
\end{array}
\right\rbrack.
\)

$ITEMSEP
$ITEM 
The linear transformation \( f \) is 
$BR
\{ $mc->buttons() \}
$BR
$BR
You should be able to explain and justify your answer.

\{ EndList('OL') \}
END_TEXT
Context()->normalStrings;

ANS( $AX->cmp() );

ANS( $A->cmp() );

ANS( radio_cmp( $mc->correct_ans() ) );


COMMENT('MathObject version.  Always injective.');

ENDDOCUMENT();
