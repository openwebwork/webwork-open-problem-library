sub mycheck2 {
  my ($c, $s, $ansHash) = @_;
  if (Formula("0") == $s) { return 0; }
  if (Formula("0") == $s->D('x')) { return 1; } else { return 0; }
}

sub mycheck3 {
  my ($c, $s, $ansHash) = @_;
  if ((Formula("0") == $s) || (Formula("0") == $s->D('x'))) { return 0; }
  if (Formula("0") == $s->D('x','x')) { return 1; } else { return 0; }
}


