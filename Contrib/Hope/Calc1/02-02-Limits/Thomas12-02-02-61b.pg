################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserDifferenceQuotient.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


################################
#  Setup

Context("Numeric")->variables->are(h=>"Real");
Context()->noreduce('(-x)-y','(-x)+y');

$a = random(3,9,1);

$diffquot = DifferenceQuotient("1 / ( sqrt($a+h) + sqrt($a) )","h");

$slope = Compute("1 / (2 sqrt($a))");


################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the limit below for \( f(t) = \sqrt{t} \) and
\( x = $a \) in two steps by using algebra to simplify the
difference quotient and then evaluating the limit.
$BR
$BR
\( \displaystyle
\lim_{h \to 0} \Bigg( \frac{f(x+h)-f(x)}{h} \Bigg)
=
\lim_{h \to 0} 
\Bigg(
\) 
\{ ans_rule(40) \}
\( \Bigg) = \)
\{ ans_rule(20) \}.
END_TEXT
Context()->normalStrings;


#################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $diffquot->cmp() );
ANS( $slope->cmp() );

COMMENT('MathObject version.  Uses parserDifferenceQuotient.pl to require a simplified difference quotient.');

ENDDOCUMENT();
