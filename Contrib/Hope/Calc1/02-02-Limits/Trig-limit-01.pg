# DESCRIPTION
# Trigonometric limit
# ENDDESCRIPTION


## Author('Paul Pearson');
## DBsubject(Calculus - single variable)
## DBchapter(Limits and Continuity)
## DBsection(Rules of limits - basic)
## Institution(Hope College)
## KEYWORDS('limit','trig limit','trigonometric limit','limit laws','continuity')


################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


################################
#  Setup

Context("Numeric")->variables->are(y=>'Real');
Context()->flags->set(
     reduceConstants => 0,
     reduceConstantFunctions => 0,
   );

$i = random(0,1,1);
@x = ("-pi","pi");
@xtex = ("-\pi","\pi");
$a = Compute("$x[$i]");

$b = random(2,7,1);

$f = Formula("$b y^2 sin(y) cot(y)");

$answer = Compute("$b ($a)^2 cos($a)");

Context()->functions->disable("Trig");

################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the following limit without using a calculator.
$BR
$BR
\( \displaystyle
\lim_{y \to $xtex[$i]} $f = 
\)
\{ ans_rule(20) \}.
END_TEXT
Context()->normalStrings;


#################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

COMMENT('MathObject version.  Trig functions not allowed in student answers.');

ENDDOCUMENT();
