# DESCRIPTION
# Trigonometric limit
# ENDDESCRIPTION


## Author('Paul Pearson');
## DBsubject(Calculus - single variable)
## DBchapter(Limits and Continuity)
## DBsection(Rules of limits - basic)
## Institution(Hope College)
## KEYWORDS('limit','trig limit','trigonometric limit','limit laws','continuity')


################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


################################
#  Setup

Context("Numeric")->variables->are(t=>'Real');
Context()->flags->set(
     reduceConstants => 0,
     reduceConstantFunctions => 0,
   );


$a = random(1,9,1);
do { $b = random(2,9,1); } until ($b != $a);
$n = random(2,5,1);

$i = random(0,2,1);
if ($i == 0) {
  $f = Formula("($a - t^$n) / (sin(t) - $b)");
} elsif ($i == 1) {
  $f = Formula("($a - t^$n) / (cos(t) - $b)");
} else {
  $f = Formula("($a - t^$n) / (tan(t) - $b)");
}

$answer = $f->eval(t=>0);

Context()->functions->disable("Trig");

################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Evaluate the following limit without using a calculator.
$BR
$BR
\( \displaystyle
\lim_{t \to 0} $f = 
\)
\{ ans_rule(20) \}.
END_TEXT
Context()->normalStrings;


#################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

COMMENT('MathObject version.  Trig functions not allowed in student answers.');

ENDDOCUMENT();
