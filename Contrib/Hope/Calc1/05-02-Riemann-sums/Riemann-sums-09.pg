ANS( $answer[0]->cmp() );
ANS( $answer[1]->cmp(ordered=>1) );
ANS( $answer[2]->cmp() );
ANS( $answer[3]->cmp() );
ANS( $answer[4]->cmp() );
ANS( $answer[5]->cmp() );
