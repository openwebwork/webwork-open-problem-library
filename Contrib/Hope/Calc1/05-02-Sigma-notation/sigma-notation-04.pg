# DESCRIPTION
# Sigma notation
# ENDDESCRIPTION


## DBsubject(Calculus - single variable)
## DBchapter(Integrals)
## DBsection(Sigma notation)
## Date(11/01/2012)
## Institution(Hope College)
## Author(Paul Pearson)
## KEYWORDS('calculus', 'sigma notation')


###########################################
#  Initialization

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "unionLists.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################################
#  Setup

Context("Numeric")->variables->are(n=>'Real',c=>'Real');
Context()->flags->set(
   reduceConstants => 0,
   reduceConstantFunctions => 0,
);
Context()->flags->set(formatStudentAnswers=>"parsed");

$n = random(25,50,1);
$c = random(-1,1,2)*random(2,5,1);

@answer = ();

$answer[0] = Compute("1");
$answer[1] = Compute("1");
$answer[2] = Compute("$c");
$answer[3] = Compute("$c");
$answer[4] = Compute("c");
$answer[5] = Compute("c");


###########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the values of the following sums.  Use formulas for the sum of the first \( n \) integers, the first \( n \) squares, and the first \( n \) cubes as needed to evaluate these sums.
\{ BeginList("OL",type=>'a') \}
$ITEM $SPACE$SPACE \( \displaystyle \sum_{k=1}^{$n} \frac{1}{$n} = \) \{ ans_rule(20) \}
$ITEMSEP
$ITEM $SPACE$SPACE \( \displaystyle \sum_{k=1}^{n} \frac{1}{n} = \) \{ ans_rule(20) \}
$ITEMSEP
$ITEM $SPACE$SPACE \( \displaystyle \sum_{k=1}^{$n} \frac{$c}{$n} = \) \{ ans_rule(20) \}
$ITEMSEP
$ITEM $SPACE$SPACE \( \displaystyle \sum_{k=1}^{n} \frac{$c}{n} = \) \{ ans_rule(20) \}
$ITEMSEP
$ITEM $SPACE$SPACE \( \displaystyle \sum_{k=1}^{$n} \frac{c}{$n} = \) \{ ans_rule(20) \}
$ITEMSEP
$ITEM $SPACE$SPACE \( \displaystyle \sum_{k=1}^{n} \frac{c}{n} = \) \{ ans_rule(20) \}
\{ EndList("OL") \}
END_TEXT
Context()->normalStrings;

###########################################
#  Answer evaluation

foreach my $i (0..$#answer) {
  ANS( $answer[$i]->cmp() );
}

COMMENT('MathObject version');

ENDDOCUMENT();
