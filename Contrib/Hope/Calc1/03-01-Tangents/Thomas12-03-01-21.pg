##DESCRIPTION
##  Find the derivatives of a polynomial evaluated at a point, use that to
##  find the equation of the tangent line of the curve at that point
##ENDDESCRIPTION

##Tagged by ynw2d

## DBsubject(Calculus - single variable)
## DBchapter(Limits and Continuity)
## DBsection(Applications - tangent lines and slopes)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('1')
## Section1('3.1')
## Problem1('39')
## KEYWORDS('Derivatives')

################################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


################################
#  Setup

Context("Numeric");
Context()->flags->set(
     reduceConstants => 0,
     reduceConstantFunctions => 0,
   );

$a = random(2,5,1);
do { $b = random(2,3,1); } until ($b != $a);
do { $c = random(2,9,1); } until ($c != $a && $c != $b);

$d = $b * $a + $c;
$dd = $d * $d;

$f = Compute("1 / ($b x + $c)");

$slope = Compute("-$b / $dd");

$tanline = Compute("1/$d - $b/$dd (x - $a)");


################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Suppose \( \displaystyle f(x) = $f \).
$BR
$BR 
(a) Find the slope of the function's graph at \( x = $a \).
$BR
Slope = \( f'($a) \) = \{ans_rule(20) \}
$BR
$BR
(b) Find an equation for the tangent line to the graph of \( y = f(x) \) when \( x = $a \).
$BR
Tangent line: $SPACE \( y \) = \{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

###############################
#  Answer evaluation

ANS( $slope->cmp() );
ANS( $tanline->cmp() );

COMMENT('MathObject version');

ENDDOCUMENT();
