ANS($ans1->cmp,$ans2->cmp,$ans3->cmp,$ans4->cmp);


sub mycheck {
  my ($correct, $student, $ansHash) = @_;
  if ($ans2 < $ans3) {
    return ( ($ans2 < $student) && ($ans3 > $student) );
  } else {
    return ( ($ans3 < $student) && ($ans2 > $student) );
