##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

SRAND($psvn);


#############################
#  Setup

Context("Vector2D")->variables->are(t=>'Real');
Context()->variables->set(t=>{limits=>[-4,-1]});

$a = non_zero_random(-9,9,1);
do { $b = random(2,9,1); } until ($b != abs($a));

$x = Formula("$a t^2");
$y = Formula("t^3 - $b t");

$xp = $x->D('t');
$yp = $y->D('t');

$xpp = $xp->D('t');
$ypp = $yp->D('t');


$rp  = Vector("<$xp,$yp>");
$rpp = Vector("<$xpp,$ypp>");

$dydx   = ($yp) / ($xp);
$d2ydx2 = ($dydx->D('t')) / ($xp);


