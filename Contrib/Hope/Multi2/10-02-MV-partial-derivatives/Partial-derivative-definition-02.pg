##############################
#  Initialization

DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserDifferenceQuotient.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#############################
#  Setup

Context("Numeric")->variables->are(
x=>'Real',
y=>'Real',
);

# construct the function
$a = random(2,9,1);

$f = Formula("$a x^3 y^2");
$fx = $f->D('x');
$fy = $f->D('y');

$fxh = DifferenceQuotient("$a*y^2*(3x^2+3xh+h^2)","h");
$fyh = DifferenceQuotient("$a*x^3*(2*y+h)","h");

######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the indicated partial derivatives of \( f(x,y) = $f \) 
using the limit definition.  The limits need to be reduced 
as much as possible before they are evaluated.
$BR
$BR
\( \displaystyle
f_x(x,y)
=
\lim_{h \to 0} \frac{f(x+h,y)-f(x,y)}{h} 
=
\lim_{h \to 0}
\Bigg(
\)
\{ ans_rule(30) \}
\( \Bigg) = \)
\{ ans_rule(20) \}.
$BR
$BR
\( \displaystyle
f_y(x,y)
=
\lim_{h \to 0} \frac{f(x,y+h)-f(x,y)}{h} 
=
\lim_{h \to 0}
\Bigg(
\)
\{ ans_rule(30) \}
\( \Bigg) = \)
\{ ans_rule(20) \}.
END_TEXT
Context()->normalStrings;

########################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $fxh->cmp() );
ANS( $fx ->cmp() );

ANS( $fyh->cmp() );
ANS( $fy ->cmp() );


COMMENT("MathObject version.  Uses parserDifferenceQuotient.pl to require students to simplify their difference quotients.");

ENDDOCUMENT();
