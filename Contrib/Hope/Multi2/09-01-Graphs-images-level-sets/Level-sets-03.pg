## Problem1('')


##############################
#  Initialization

DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
);

TEXT(beginproblem());


#############################
#  Setup

Context("Numeric")->variables->are(t=>'Real');

$a = random(2,5,1);

$fx = Formula("$a*t^2");
$fy = Formula("$a*t^3");
$t = non_zero_random(-5,5,1);

$fxt = $fx->eval(t=>$t);
$fyt = $fy->eval(t=>$t);

$answer = List(Compute("$t"));

$k = Compute("1");


######################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Let \( f : \mathbb{R} \to \mathbb{R}^2 \) be defined by
\( f(t) = ($fx,$fy) \).  
$BR
$BR
(a) The level sets of \( f \) are all subsets of \( \mathbb{R}^k \)
for \( k = \) \{ ans_rule(5) \}.
$BR
$BR
(b) Find all points in the level set of \( f \) 
at level \( ($fxt,$fyt) \).  If there is more than one point, 
enter your answers as a comma separated list.
$BR
$BR
\{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;


########################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $k->cmp(), $answer->cmp() );


COMMENT("MathObject version");

ENDDOCUMENT();
