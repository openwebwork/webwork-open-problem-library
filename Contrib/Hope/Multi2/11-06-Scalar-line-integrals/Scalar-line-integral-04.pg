#  Initialization


DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserVectorUtils.pl",
"PGcourse.pl",
"weightedGrader.pl",
);

install_weighted_grader();


TEXT(beginproblem());

##############################################
#  Setup

Context("Vector2D");
Context()->variables->are(t=>"Real");

#
#  Points on the line
#
$a = random(2,8,1);
do { $b = random(2,9,1); } until ($b != $a);

$c = random(2,9,1);
do { $d = random(2,9,1); } until ( $d != $c );

$P = Point($a,0);
$Q = Point(0,$b);
$V = Vector(-($a),$b);

# 
#  Times, vectors, and lines
#
$Ta = Formula("t");
$La = $P + $Ta * $V;
$La = Formula("$P + t * $V");

$x = Formula("$a - $a * t");
$y = Formula("$b * t");

$integrand = Compute("($c * $x + $d * $y) * sqrt($a^2 + $b^2)");

$lowerlimit = Real("0");
$upperlimit = Real("1");

$integralvalue = Real("($a * $c + $b * $d)/2 * sqrt($a^2+$b^2)") -> reduce;



##########################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
