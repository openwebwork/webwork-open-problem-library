###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"unionMessages.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###########################
#  Setup

Context("Vector2D");

$a = random(2,9,1);
do { $b = random(2,9,1); } until ($b != $a);
do { $c = random(2,9,1); } until ($c != $a && $c != $b);

$f = Compute("<$a x^2 - $b y^2 + $c e^(x^2-y^2), cos($b x y)>");

$answer = $f->eval(x=>0,y=>0);


###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the limit, if it exists.  Be sure you can explain your answer.
$BR
$BR
\( \displaystyle \lim_{(x, y) \rightarrow (0,0)} $f = \) \{ ans_rule(20) \}
$PAR
$INFINITY_MESSAGE 
$DNE_MESSAGE
END_TEXT
Context()->normalStrings;


############################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp() );

COMMENT('MathObject version.');

ENDDOCUMENT();
