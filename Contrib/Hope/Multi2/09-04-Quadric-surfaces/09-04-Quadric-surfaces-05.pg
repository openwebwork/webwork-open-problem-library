\{ ans_rule(5) \}
\( \big( \)
\{ ans_rule(10) \}
\( \big)^2 = \)
\{ ans_rule(10) \}
END_TEXT
Context()->normalStrings;

########################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

foreach my $i (0..scalar(@answer)-1) {
  ANS( $answer[$i]->cmp() );
}

COMMENT("MathObject version.");

ENDDOCUMENT();


