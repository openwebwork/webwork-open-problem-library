DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl",
  "MathObjects.pl",
  "contextIntegerFunctions.pl"
);

sub pick {
  my ($k, @in) = @_;
  my @out = ();
  while (@out < $k) { push( @out, splice(@in, random(0,$#in), 1) ); }
  @out; 
};

TEXT(beginproblem());
Context("IntegerFunctions");
Context()->variables->are(x=>"Real");
Context()->flags->set(reduceConstants=>0);

($b,$g) = pick(2,(5..8));
$n = $b+$g;

$k = random(4,min($g,$b));
my $m = random(2,min($g,$b,$k)-1);

my $i = random(0,1);

$expr[0] = "\(P(\text{exactly }$m\text{ " . ("girls})\)","boys})\)")[$i];
$ans[0]  = (Formula("C($g,$m)*C($b,$k-$m)"), 
            Formula("C($b,$m)*C($g,$k-$m)"))[$i];

$i = random(0,1);

$expr[1] = "\(P(\text{at least one " . ("girl})\)","boy})\)")[$i];
$ans[1]  = (Formula("C($n,$k)-C($b,$k)"), 
            Formula("C($n,$k)-C($g,$k)"))[$i];


$expr[2] = "\(P(\text{at least two " . ("girls})\)","boys})\)")[$i];
$ans[2]  = (Formula("C($n,$k)-C($b,$k)-C($b,$k-1)*C($g,1)"), 
            Formula("C($n,$k)-C($g,$k)-C($g,$k-1)*C($b,1)"))[$i];

$expr[3] = "\(P(\text{at least one of each gender})\)";
$ans[3]  = Formula("C($n,$k)-C($b,$k)-C($g,$k)");

@ans = map { Formula("($_) / C($n,$k)") } @ans;

@index = ("A","B","C","D","E","F","G","H","I","J","K","L","M","N","O");

Context()->texStrings;
BEGIN_TEXT

A group of $n friends consists of $b boys and $g girls.  
$BR 
A subgroup of size $k is randomly chosen from the friends.
$BR
Give formulas for the probability of the subgroup 
containing the following.
END_TEXT
for ($j=0;$j<=$#expr;$j++) {
BEGIN_TEXT

$PAR

$BBOLD ($index[$j]) $EBOLD $SPACE $SPACE
$expr[$j] 
\(=\)  \{ans_rule(25)\}

END_TEXT
}
BEGIN_TEXT
$PAR
In your answers, write \(\fbox{C(n,k)}\) and \(\fbox{P(n,k)}\) for \({}_nC_k\) and \({}_nP_k\).
$BR $SPACE $SPACE For example \(\fbox{C(10,4)}\) 
  is the number of ways to fill a bowl of ice cream with 4 distinct flavors from 10
$BR $SPACE $SPACE and \(\fbox{P(10,4)}\) 
  is the number of ways to stack a cone of ice cream with 4 distinct flavors from 10
END_TEXT

Context()->normalStrings;

$showPartialCorrectAnswers = 1;

for ($j=0;$j<=$#ans;$j++) {
  ANS( $ans[$j]->cmp() ); 
}


ENDDOCUMENT();        # This should be the last executable line in the problem.

