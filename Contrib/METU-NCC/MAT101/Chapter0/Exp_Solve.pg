sub pick {
  my ($k, @in) = @_;
  my @out = ();
  while (@out < $k) { push( @out, splice(@in, random(0,$#in), 1) ); }
  @out; 
}

TEXT(beginproblem());
Context("Fraction");
Context()->variables->are(x=>"Real",y=>"Real");

my $a; my $b; my $c; my $d; my $ab;

######## (A)

($a,$b,$c) = (random(2,4),random(2,5),non_zero_random(-4,4));
$d =  $b*$a+$c;

$expr[0] = Formula("$b sqrt(x)+$c")->reduce;
$expr[0] = $expr[0]->TeX . " = $d" ;  
$ans[0] =  Real($a**2);

######### (B)

($a,$b,$c) = (random(2,4),random(2,5),non_zero_random(-4,4));
$d =  $b*$a;

$expr[1] = Formula("$b sqrt(x+$c)")->reduce;
$expr[1] = $expr[1]->TeX . " = $d" ;  
$ans[1] =  Real($a**2-$c);


######### (C)


($a,$b,$c) = (random(2,4),random(2,4),random(2,3));
$d =  $b*$a;

$expr[2] = "$b x^{1/$c}= $d";
$ans[2]  =  Real($a**$c);


######### (D)

($a,$b,$c) = (random(2,3),random(3,5),random(2,4));
$d =  $c*$a**$b;

$expr[3] = "$c x^{-$b}= $d";
$ans[3]  =  Fraction(1,$a);

if ($b%2==0) { $ans[3] = List($ans[3],-$ans[3]) };


#########

($a,$b) = (non_zero_random(-4,4),random(2,5));
$c = $a*random(2,5);
$d = $b + $c/$a;

$expr[4] = "$d = $b + \frac{$c}{x}";
$ans[4]  =  Real($a);


#########

($a,$b,$c) = (non_zero_random(-4,4),random(2,5),random(2,5));

$ans[5]  =  Formula("$c/(y-$b)")->reduce;
$c="" if ($c==1);
$expr[5] = "y = $b + $c x^{-1}";





@index = ("A","B","C","D","E","F","G","H","I","J","K","L","M","N","O");

Context()->texStrings;
BEGIN_TEXT

Solve the following equations for \(x\).

END_TEXT
for ($i=0;$i<=$#expr;$i++) {

BEGIN_TEXT
$PAR
$BBOLD ($index[$i]) $EBOLD 
 \(\quad \displaystyle $expr[$i] \)
$BR \(\qquad x = \) \{ans_rule(5);\}

END_TEXT

}
BEGIN_TEXT
$BR
$SPACE $SPACE $BITALIC
Your answer should be a function of \(y\)
$EITALIC
END_TEXT

Context()->normalStrings;

$showPartialCorrectAnswers = 1;

for ($i=0;$i<=$#ans;$i++) {
  ANS( $ans[$i]->cmp() );
}



ENDDOCUMENT();        # This should be the last executable line in the problem.

