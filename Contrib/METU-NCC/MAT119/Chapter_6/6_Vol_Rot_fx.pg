Context()->normalStrings;


ANS( $type[$i]->cmp()   );
ANS( Real($l[1])->cmp() );
ANS( Real($l[0])->cmp() );
ANS( $area[$i]->cmp() );
ANS( $dwhat->cmp() );


ANS( $type[$j]->cmp()   );
ANS( Real($l[1])->cmp() );
ANS( Real($l[0])->cmp() );
ANS( $area[$j]->cmp() );
ANS( $dwhat->cmp() );


