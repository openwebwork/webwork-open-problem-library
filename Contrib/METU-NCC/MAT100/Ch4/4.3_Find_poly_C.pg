DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl",
  "MathObjects.pl",
);

sub pick {
  my ($k, @in) = @_;
  my @out = ();
  while (@out < $k) { push( @out, splice(@in, random(0,$#in), 1) ); }
  @out; 
};

TEXT(beginproblem());

Context("Numeric");

($a,$c,$e) = pick(3,(-4..4));
($b,$d)    = map { $_*random(-1,1,2) } pick(2,(1..4));

$ans[0] = Formula("(x-$e) 
                   (x^2-2*$a x + (($a)^2+($b)^2)) 
                   (x^2-2*$c x + (($c)^2+($d)^2))")->reduce; 

Context("Complex");

$z1 = Complex($a,$b);
$z2 = Complex($c,$d);

Context()->texStrings;

BEGIN_TEXT

Find the real polynomial of lowest degree with $BR
\(\quad \bullet\ \) Complex roots at \($z1\) and \($z2\) $BR
\(\quad \bullet\ \) Real root at \($e\)$BR
\(\quad \bullet\ \) Leading coefficient \(1\) $PAR
 
\(p(x) = \) \{ ans_rule(25) \}

$PAR
(It is sufficient to leave your answer as a product of real factors.)

END_TEXT


Context()->normalStrings;

$showPartialCorrectAnswers = 1;

for ($i=0;$i<=$#ans;$i++) {
  ANS( $ans[$i]->cmp() );
}



ENDDOCUMENT();        # This should be the last executable line in the problem.

