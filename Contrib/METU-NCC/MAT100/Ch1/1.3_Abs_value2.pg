## BEGIN_DESCRIPTION
##  Linked absolute value problems -- equality and inequality
## END_DESCRIPTION
##
##############################################
## DBsubject(Algebra)
## DBchapter(Absolute value expressions and functions)
## DBsection(Absolute value inequalities)
## Institution(METU-NCC)
## Author(Benjamin Walter)
## MO(1)
## Static(0)
## Level(2)
## Language(en)
###############################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl",
  "MathObjects.pl",
  "contextInequalities.pl",
  "contextFraction.pl",
);

sub pick {
  my ($k, @in) = @_;
  my @out = ();
  while (@out < $k) { push( @out, splice(@in, random(0,$#in), 1) ); }
  @out; 
};

TEXT(beginproblem());
Context("Fraction");
Context()->noreduce('(-x)-y','(-x)+y');

my ($A,$C) = PGsort(sub {$_[0] < $_[1]}, pick(2,(2..7)));
if ($C==$A+1) { $C+=1; }

do { $B = random(1,7); }
until (($B!=$A) && ($B!=$C));


$expr[0] = Formula("$A abs(x-$B)-x")->reduce->TeX .
           "\ =\ " . Formula("$C abs(x)")->TeX;

my @end = (Fraction($A*$B,($A+1)-$C),
           Fraction($A*$B,$A+$C+1));

$ans[0] = List(@end);

Context("Inequalities");
Context()->variables->are(x=>"Real");
Context()->constants->add(EmptySet => Set());
Context()->flags->set(noneWord=>"EmptySet");
Context()->noreduce('(-x)-y','(-x)+y');

my $i = random(0,3);

$expr[1] = Formula("$A abs(x-$B)-x")->reduce->TeX .
    ("\ \le\ ","\ <\ ","\ \ge\ ","\ >\ ")[$i] . Formula("$C abs(x)")->TeX;

$ans[1] = 
   (Inequality("(-inf,$end[0]] U [$end[1],inf)"),
    Inequality("(-inf,$end[0]) U ($end[1],inf)"),
    Inequality("[$end[0],$end[1]]"),
    Inequality("($end[0],$end[1])")
   )[$i];

@index = ("A","B","C","D","E","F","G","H","I","J","K","L","M","N","O");

Context()->texStrings;

BEGIN_TEXT
Solve the following linked problems.
$PAR

$BBOLD ($index[0]) $EBOLD 
  Solve the $BBOLD equality $EBOLD \(\displaystyle\ $expr[0]\) 
$BR 
\(\qquad x = \) \{ans_rule(10);\} 


$PAR
$BBOLD ($index[1]) $EBOLD 
 Solve the $BBOLD inequality $EBOLD \(\displaystyle\ $expr[1]\)
$BR 
\(\qquad \) \{ans_rule(20);\} 

END_TEXT


Context()->normalStrings;

$showPartialCorrectAnswers = 1;

for ($i=0;$i<=$#ans;$i++) {
  ANS( $ans[$i]->cmp() );
}



ENDDOCUMENT();        # This should be the last executable line in the problem.

