DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl",
  "MathObjects.pl",
);

sub pick {
  my ($k, @in) = @_;
  my @out = ();
  while (@out < $k) { push( @out, splice(@in, random(0,$#in), 1) ); }
  @out; 
};

TEXT(beginproblem());

Context("Numeric");
Context()->variables->are(x=>"Real",y=>"Real",u=>"Real");
Context()->noreduce('(-x)-y','(-x)+y');

START:

my $a = random(2,9); 
my $b = non_zero_random(-10,-$a-1,2)+(($a+1)%2);

while ($a+$b==1) { $b = non_zero_random(-10,-$a-1,2)+(($a+1)%2); }

my $B = ($a+$b-1)/2; 

my $A = $a*$b - ($B)**2;

if ($a-$B < 0) { goto START; }  # ensure that $a is a solution

$eqn1 = "u = " . Formula("sqrt(u-$A) + $B")->reduce->TeX;

$eqn2 = "\sqrt{x} = " .Formula("sqrt(sqrt(x)-$A)+$B")->reduce->TeX;

if ($b-$B > 0) {
  $ans[0] = List(Real($a),Real($b));
  $ans[1] = List(Real($a*$a),Real($b*$b)); 
} else {
  $ans[0] = List(Real($a));
  $ans[1] = List(Real($a*$a)); 
} 

@index = ("A","B","C","D","E","F","G","H","I","J","K","L","M","N","O");

Context()->texStrings;
BEGIN_TEXT
Solve the following linked problems.
$PAR

$BBOLD ($index[0]) $EBOLD 
 Find all real solutions to the equation \( $eqn1 \)
$BR 
\(\qquad u=\) \{ans_rule(10);\} 


$PAR
$BBOLD ($index[1]) $EBOLD 
 Find all real solutions to the equation \( $eqn2 \)
$BR 
\(\qquad x=\) \{ans_rule(10);\} 

END_TEXT


Context()->normalStrings;

$showPartialCorrectAnswers = 1;

for ($i=0;$i<=$#ans;$i++) {
  ANS( $ans[$i]->cmp() );
}

