DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl",
  "MathObjects.pl",
);

sub pick {
  my ($k, @in) = @_;
  my @out = ();
  while (@out < $k) { push( @out, splice(@in, random(0,$#in), 1) ); }
  @out; 
};

TEXT(beginproblem());

COMMENT('This was an online exam page.  Maybe these should be split up into three different problems for homework');

Context("Numeric");
Context()->variables->are(x=>"Real");
Context()->flags->set(reduceConstantFunctions=>0);
Context()->flags->set(reduceConstants=>0);


my @c = pick(4,(2,3,5,7));
my @p = pick(2,(2,3)); $p[random(0,1)] = "";

$expr[0] = "$c[0]\cdot $c[1]^{$p[0] x} = $c[2]^{$p[1] x}\cdot $c[3]";
$ans[0] = Formula("(ln($c[3])-ln($c[0]))/($p[0] ln($c[1])-$p[1] ln($c[2]))"); 

my $i = random(0,13);
$expr[1] = (
  "2^{2x} + 2^{x+1} = 3",   # x=0
  "2^{2x} + 2^{x+2} = 5",   # x=0
  "2^{2x} + 2^{x+3} = 9",   # x=0
  "2^{2x} + 2^{x+1} = 8",   # x=1
  "2^{2x} + 2^{x+2} = 12",  # x=1
  "2^{2x} + 2^{x+3} = 20",  # x=1
  "2^{2x} + 2^{x+1} = 24",  # x=2
  "2^{2x} + 2^{x+2} = 32",  # x=2
  "2^{2x} - 2^{x+1} = 8",   # x=2
  "2^{2x} - 2^{x+2} = 32",  # x=3
  "3^{2x} + 3^{x+1} = 4",   # x=0
  "3^{2x} + 3^{x+2} = 10",  # x=0
  "3^{2x} + 3^{x+1} = 18",  # x=1
  "3^{2x} - 3^{x+1} = 54",  # x=2
 )[$i];
$ans[1] = Real(
 (0,0,0,1,1,1,2,2,2,3,0,0,1,2)[$i]
 );
  
my $s = random(-1,1,2);  
$c[2] = random(2,3);
do {$c[0] = non_zero_random(-4,4); $c[1] = -$c[0] + $s*$c[2];}
until (($c[1] != 0) && ($c[0] != $c[1])); 

$s = ($s==1) ? "-" : "+";
$expr[2] = "\bigl(\ln x\bigr)^2 $s \ln \bigl(x^{$c[2]}\bigr)" . 
           "\ =\ " . 
	   Formula("-$c[0]*$c[1]")->reduce->TeX;
$ans[2] = List(Formula("e^($c[0])"), Formula("e^($c[1])")); 


@index = ("A","B","C","D","E","F","G","H","I","J","K","L","M","N","O");

Context()->texStrings;
BEGIN_TEXT
Solve the following similar problems.
Do not use a calculator.

$PAR

$BBOLD ($index[0]) $EBOLD 
  Solve \(\displaystyle\ $expr[0]\) 
$PAR 
\(\qquad x=\) \{ans_rule(20);\} 
$PAR
$SPACE $SPACE $BITALIC (You may need to change base, writing your answer using \(\ln\), in order for webwork to compute correctly.)$EITALIC


$PAR
$BBOLD ($index[1]) $EBOLD 
 Solve  \(\displaystyle\ $expr[1]\)
$PAR 
\(\qquad x=\) \{ans_rule(20);\} 


$PAR
$BBOLD ($index[2]) $EBOLD 
 Solve  \(\displaystyle\ $expr[2]\)
$PAR
\(\qquad x=\) \{ans_rule(20);\} 
$PAR


END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

for ($i=0;$i<=$#ans;$i++) {
  ANS( $ans[$i]->cmp() );
}


ENDDOCUMENT();        # This should be the last executable line in the problem.

