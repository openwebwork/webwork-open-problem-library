##################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGmatrixmacros.pl",
"MathObjects.pl",
"parserMultiAnswer.pl",
);


TEXT(beginproblem());

#####################################
#  Setup

Context("Numeric");

# Construct matrix A with known eigenvector [v11 v12] eigenval l1

$a = non_zero_random(-5,5,1);
$c = random(1,3,1);
do { $b = non_zero_random(-5,5,1); } until (($b*$c != $a) and (abs($b*$c) < 10));

$neg = non_zero_random(-1,1,1);

$min = max(-9,-9-$a,-9-$b*$c);  $max = min(9,9-$a,9-$b*$c);
do { $phase = non_zero_random($min,$max,1); } until ((abs($a+$b*$c+$phase) < 12) and ($a!= -$phase) and ($b*$c != -$phase));


$A11 =  $phase;  $A12 =  -$neg*$a*$c;
$A21 = $neg*$b;  $A22 =  $a+$b*$c+$phase;

$l1= Real("$b*$c+$phase");
$v11 = Real("$a");
$v12 = Real("-$neg*$b");

$scale = random(1,10/max(abs($v11),abs($v12)),1);
$v11 = $scale*$v11;
$v12 = $scale*$v12;

# Construct matrix B with known eigenvector [v21 v22] eigenval l2

$a = non_zero_random(-5,5,1);
$c = random(1,3,1);
do { $b = non_zero_random(-5,5,1); } until (($b*$c != $a) and (abs($b*$c) < 10));

$neg = non_zero_random(-1,1,1);

$min = max(-9,-9-$a,-9-$b*$c);  $max = min(9,9-$a,9-$b*$c);
do { $phase = non_zero_random($min,$max,1); } until ((abs($a+$b*$c+$phase) < 12) and ($a!= -$phase) and ($b*$c != -$phase));


$B11 =  $phase;  $B12 =  -$neg*$a*$c;
$B21 = $neg*$b;  $B22 =  $a+$b*$c+$phase;

$l2 = Real("$b*$c+$phase");
$v21 = Real("$a");
$v22 = Real("-$neg*$b");


# Answer checkers

$multians = MultiAnswer($v21,$v22)->with(
    singleResult => 1,
    checkTypes => 1,
    allowBlankAnswers => 0,
    format =>  
      "<table border='0' cellspacing='5'>
          <tr><td> %s </td></tr>
          <tr><td> %s </td></tr>
       </table>",
    tex_format =>  
      "\left\lbrack \begin{array}{r} %s \\ %s\end{array}\right\rbrack",  

    checker => sub {
        my ($correct, $student, $answerHash ) = @_;
        my @c = @{$correct};
	my @s = @{$student};

        my $flag  = 0;

        if (($s[0] == 0) && ($s[1] == 0)) {
          Value::Error("Eigenvector cannot be all zero!"); 
        } else { 
           if ( ( $B11*$s[0] + $B12*$s[1] == $l2*$s[0]) &&
                ( $B21*$s[0] + $B22*$s[1] == $l2*$s[1]) ) 
           {
             $flag=1;
           } else {
             Value::Error("Not a $l2-eigenvector!"); 
           }
        }
       return $flag; 
    }
);




#####################################
#  Main text

Context()->texStrings;
BEGIN_TEXT


The matrix 
\( 
\displaystyle
\mathrm{A} = 
\left\lbrack
\begin{array}{rrr}
 $B11 & $B12  \\
 $B21 & $B22
\end{array}
\right\rbrack
\)
has an eigenvalue
\( 
\displaystyle
\lambda = $l2.
\)
$BR
Find an eigenvector for this eigenvalue.
$BR
\{ mbox( [
'$SPACE $SPACE \( \boldsymbol{\vec{v}} =  \) ', 
display_matrix([[$multians->ans_rule(5)],[$multians->ans_rule(5)]]),
] ) \}


$PAR
$HR
$PAR

$BBOLD Note: $EBOLD You should solve the following problem $BBOLD WITHOUT $EBOLD computing all eigenvalues.
$PAR
The matrix 
\( 
\displaystyle
\mathrm{B} = 
\left\lbrack
\begin{array}{rrr}
 $A11 & $A12  \\
 $A21 & $A22
\end{array}
\right\rbrack
\)
has an eigenvector 
\( 
\displaystyle
\boldsymbol{\vec{v}} = 
\left\lbrack
\begin{array}{r}
 $v11  \\
 $v12
\end{array}
\right\rbrack.
\)
$BR
Find the eigenvalue for this eigenvector.
$BR
\{ mbox( [ 
'$SPACE $SPACE \( \lambda = \) ',
$l1->ans_rule(5)
] ) \}


END_TEXT
Context()->normalStrings;

#####################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

Context("Numeric");

ANS( $multians->cmp() );
ANS( $l1->cmp );

COMMENT('MathObject version. Generates random 2x2 matrices with eigenvectors of form [ x x ].  Eigenvalues and eigenvectors between -4 and 4. ');

ENDDOCUMENT(); 
