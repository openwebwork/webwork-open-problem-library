do {$terms = random(250,350);} until ($terms%2 ==0); #set the final term number value to show; use even here to ensure even result in sum

#construct the sequence
$a1 = $start + $rate;
$a2 = $start + 2*$rate;
$a3 = $start + 3*$rate;
$last = $start + $rate*($terms-1);
$sum = $last + $start;

$ans=($sum*$terms)/2;


