Context("IntegerFunctions");
$n = random(4,9); #define number of possible elements in set A
$A = Set(1..$n);
do {$s = random(3,6);} until ($s <$n);
$half = int($n/2);

$go = 0;
for ($j = 0; $j<= $half; $j++)
{
$go = Compute("$go + C($n, $j*2)");
}


$ans1 = Compute("2^($n)");
$ans2 = Compute("C($n,$s)");
$ans3 = Compute("2^$half");
$ans4 = $go;

