## Institution(University of Northern Colorado)
## Language(en-US)

DOCUMENT();

####################
# Load Macros
####################
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",

  "contextIntegerFunctions.pl",
  "PGcourse.pl",
);

####################
# Header
####################
COMMENT('Authored in PreTeXt');
TEXT(beginproblem());

####################
# PG Setup
####################
Context("IntegerFunctions");

do {$a = random(12,19);} until ($a !=13);
do {$b = random(13,23); } until ($b > $a);
$c = random(5,12);
$d = $a-$c;
$f = $c-3;
$g = $b-$f;

$ans = Compute("3^{[$d]}*C([$a],[$c])+5^{[$g]}*C([$b],[$f])");



####################
# Body
####################
BEGIN_PGML

What is the coefficient of [`x^{[$c]}`] in the expansion of [`(x+3)^{[$a]} + x^3(x+5)^{[$b]}\text{?}`]


[__________]{$ans}


END_PGML

####################
# Solution
####################
BEGIN_PGML_SOLUTION
[`3^{[$d]}\cdot{[$a] \choose [$c]} + 5^{[$g]}\cdot{[$b] \choose [$f]}\text{.}`]


END_PGML_SOLUTION

####################
# End Problem
####################
ENDDOCUMENT();
