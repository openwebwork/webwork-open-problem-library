Context("IntegerFunctions");
do {$s=random(3,9);} until ($s%2 ==0) and ($s !=4);
do {$n = random(7,15);} until ($n%2 != 0);
$A = Set(1..$s);
$half = $s/2;
$n1= $n-1;
$b = ceil($n/2);

$ans1 = Compute("$s^$n");
$ans2 = Compute("$s^$n1*$half");

$ev = 0;
for ($j = $b; $j <=$n; $j++)
{
$ev = Compute("$ev + C($n,$j)*$half^($j)*$half^($n-$j)");
}
$ans3 = $ev;

