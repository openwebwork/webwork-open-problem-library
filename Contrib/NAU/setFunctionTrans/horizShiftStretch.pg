DOCUMENT();

  loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserFunction.pl",
  );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

parserFunction("f(x)" => "(x-2)^2-3");

{
$a = non_zero_random(1,10,1);
$b = non_zero_random(2,5,1);
redo if ($a==$b);
}

$answer = Formula("f(x/2-$a)");

BEGIN_TEXT
Find the function \( g \) whose graph is constructed from the graph of \( f \) by a shift to the right by \( $a \) 
followed by a horizontal stretch away from the \( y \)-axis by a factor of \( $b \)?  
$BR
\( g(x) = \) \{ ans_rule(25) \}
END_TEXT

ANS( $answer->cmp() );


ENDDOCUMENT();

