#
# Rewrite an English phrase as a mathematical expression 
# $a increased by/decreased by a number
#
# Last edited: Jordan 6/11/13
#
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Algebraic Expressions')
## KEYWORDS('expression','english-to-math')
## DBCCSS('6.EE.2.a')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')
## Author('Alex Jordan, Carl Yao, Chris Hughes')
## Institution('PCC')




##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PCCmacros.pl",
  "PGcourse.pl",
);

##############################################

Context("Numeric");
$var=RandomVariableName();
Context()->variables->are($var=>"Real");


$a = non_zero_random(1,10,1);

$index = random(0,1,1);
@operations = ('increased by','decreased by');
$operation = $operations[$index];


$ans = Compute("$a+(-1)**($index)*$var")->reduce->reduce;

##############################################

TEXT(beginproblem());

BEGIN_PGML

Translate the following phrase or sentence into a math expression or equation (whichever is appropriate). Use [`[$var]`] to represent the unknown number.

    [@numberWord($a)@] [$operation] a number

    [_______]{$ans} 

END_PGML

##############################################


@solnwords = ('addition','subtraction');
$solnword = $solnwords[$index];

$subcomment = '';
if ($index == 1)
{$subcomment = 'We must subtract _by_ the unknown number.';}

BEGIN_PGML_SOLUTION

The phrase '[$operation]' implies [$solnword]. [$subcomment]** So the answer is [` [$ans] `].

END_PGML_SOLUTION

ENDDOCUMENT();


