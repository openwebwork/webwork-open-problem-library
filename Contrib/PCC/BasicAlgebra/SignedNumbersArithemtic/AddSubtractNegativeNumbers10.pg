# WeBWorK problem written by Carl Yao
# Portland Community College
#
# Template
# Perform the given addition and subtraction:
#
#       $a-$b+($c)
#       $d-($e)+($f)
# 
# a, b, c, d, e, f are all integers- some positive, 
# some negative, none of which are greater than 20 in 
# absolute value.
#
# Last updated: Hughes, 6/25/13
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Algebraic Expressions')
## KEYWORDS('integer','negative','add','subtract')
## DBCCSS('6.NS.6')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')
## Author('Alex Jordan, Carl Yao, Chris Hughes')
## Institution('PCC')

##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');

Context()->flags->set(
   reduceConstants => 0,
   reduceConstantFunctions => 0
);

$a=random(-20,-10,1);
$b=random(1,10,1);
$c=random(-10,-1,1);
$d=random(1,10,1);
$e=random(-20,-10,1);
$f=random(-20,-10,1);

$func1 = Formula("$a-$b+($c)");
$func2 = Formula("$d-($e)+($f)");

$step11=$a-$b;
$step12=$d-$e;
$absE = abs($e);

$ans1 = $a-$b+($c);
$ans2 = $d-($e)+($f);

Context("LimitedNumeric");

##############################################

TEXT(beginproblem());

BEGIN_PGML

Perform the given addition and subtraction:

    [`` [$func1]=  ``]  [________]{$ans1}

    [`` [$func2]=  ``]  [________]{$ans2}

END_PGML

##############################################

BEGIN_PGML_SOLUTION

*Problem 1*

    [`
       \begin{aligned}
           [$func1] & =[$step11]+([$c])\\
                    & =[$step11]+[$c]\\
                    &=[$ans1] 
        \end{aligned}
     `] 

*Problem 2*

    [`\begin{aligned}
           [$func2] & =[$d]+[$absE]+([$f]) \\
                    & =[$step12]+([$f]) \\
                     & =[$step12]+[$f] \\
                    &=[$ans2] 
       \end{aligned}
     `]

END_PGML_SOLUTION

ENDDOCUMENT();


