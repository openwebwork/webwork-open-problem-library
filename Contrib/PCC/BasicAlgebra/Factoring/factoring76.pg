# Template:
# Factor the polynomial using the greatest common factor. 
#
#     d*( a*x^4 + b*x^3 + c x^2 )
#
# a, d are integers on the interval [2,10].
#
# b, c are integers on [-10,10].
#
# We make sure that b^2-4ac < 0 so that the trinomial doesn't factor nicely.
#
# Last updated: Hughes, 8/15/13
# ENDDESCRIPTION

## DBCC('A-APR.1','A-SSE.2')
## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Exponents', 'Factoring')
## KEYWORDS('polynomial','exponents','factoring','greatest common factor')
## Author('Alex Jordan, Carl Yao, Chris Hughes')
## Institution('PCC')

##############################################
DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PCCmacros.pl",
"contextLimitedFactor.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedFactor");
Context()->noreduce('(-x)-y','(-x)+y');
$var = RandomVariableName(type=>'variable');
Context()->variables->are($var=>'Real');

Context()->strings->add("cannot be factored"=>{},
    "cannot be factored."=>{alias=>"cannot be factored"});
Context()->strings->add('prime'=>{}, 'it is prime'=>{alias=>'prime'});
Context()->noreduce('(-x)-y', '(-x)+y'); 





# the question formula
$a = 1;
$b = 4;
$c = 1;
while($b**2-4*$a*$c>=0 or gcd(gcd($a,$b),gcd($b,$c))!=1)
{
    $a = random(2,10,1);
    $b = non_zero_random(-10,10,1);
    $c = non_zero_random(-10,10,1);
}
$d = random(2,10,1);
$question = Formula("$d*$a*$var^4+$d*$b*$var^3+$d*$c*$var^2")->reduce;
$ans = Formula("$d*$var^2($a*$var^2+$b*$var+$c)")->reduce;
##############################################
TEXT(beginproblem());

BEGIN_PGML
Factor the given polynomial 

    [`[$question]=`] [___________________]{$ans}

[@KeyboardInstructions('If the expression cannot be factored then answer with [|prime|]*.')@]**
END_PGML

BEGIN_PGML_SOLUTION
The greatest common factor is [`[$d][$var]^2`], so we can factor the polynomial as follows:

    [`[$question]=[$ans]`]
END_PGML_SOLUTION
##############################################

ENDDOCUMENT();
