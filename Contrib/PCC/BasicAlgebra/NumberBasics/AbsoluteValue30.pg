##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl"
);

##############################################

Context("LimitedNumeric");

$a=random(-4,-1,1);
$b=random(1,5,1);
$c=random(6,10,1);

$ans1 = -abs($b-$c);
$ans2 = abs(-$b-$c);
$ans3 = $a*abs($c-$b);

$pro1Step1 = $b-$c;
$pro1Step2 = abs($b-$c);
$pro2Step1 = -$b-$c;
$pro3Step1 = $c-$b;
$pro3Step2 = abs($c-$b);

$ans1 = Compute("$ans1");
$ans2 = Compute("$ans2");
$ans3 = Compute("$ans3");

##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate the following expressions which involve the absolute value:

1.    [`` - \lvert [$b]-[$c] \rvert =  ``]  [________]{$ans1} 

2.    [`` \lvert -[$b]-[$c] \rvert =  ``]  [________]{$ans2} 

3.    [`` [$a] \lvert [$c]-[$b] \rvert =  ``]  [________]{$ans3} 

END_PGML

##############################################

BEGIN_PGML_SOLUTION

1.  [` 
         \begin{aligned}[t] 
              - \lvert [$b]-[$c] \rvert  & = - \lvert [$pro1Step1] \rvert \\
                                         & = [$ans1] 
          \end{aligned}`]

2.  [`
         \begin{aligned}[t] 
               \lvert -[$b]-[$c] \rvert  & = \lvert [$pro2Step1] \rvert \\
                                         &= [$ans2] 
          \end{aligned}`]

3. [` 
        \begin{aligned}[t]
              [$a] \lvert [$c]-[$b] \rvert & = [$a] \cdot \lvert [$pro3Step1] \rvert \\
                                          & = [$a] \cdot [$pro3Step2] \\
                                          & = [$ans3] 
         \end{aligned}`]

END_PGML_SOLUTION

ENDDOCUMENT();


