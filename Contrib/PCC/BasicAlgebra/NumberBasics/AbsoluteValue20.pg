# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Algebraic Expressions')
## KEYWORDS('integer','negative','add','subtract','absolute value')
## DBCCSS('6.NS.6','6.NS.7')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')
## Author('Alex Jordan, Carl Yao, Chris Hughes')
## Institution('PCC')

##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');

Context()->flags->set(
   reduceConstants => 0,
   reduceConstantFunctions => 0
);

$a=random(1,10,1);
$b=random(-10,-1,1);
$c=0;
$d=random(10,20,1);
$e=random(-10,-1,1);
$f=random(-10,-5,1);
$g=random(-4,-1,1);

$func1 = Formula("$d+($e)");
$func2 = Formula("$f-($g)");

$ans1 = $a;
$ans2 = -$b;
$ans3 = $c;
$ans4 = Compute("abs($func1)");
$ans5 = Compute("abs($func2)");

$pro4Step = $d+$e;
$pro5Step = $f-$g;

Context("LimitedNumeric");
$ans1 = Compute("$ans1");
$ans2 = Compute("$ans2");
$ans3 = Compute("$ans3");
$ans4 = Compute("$ans4");
$ans5 = Compute("$ans5");

##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate the following expressions which involve the absolute value:

1.    [`` \left| [$a] \right| =  ``]  [________]{$ans1}

2.    [`` \left| [$b] \right| =  ``]  [________]{$ans2}

3.    [`` \left| [$c] \right| =  ``]  [________]{$ans3}

4.    [`` \left| [$func1] \right| =  ``]  [________]{$ans4}

5.    [`` \left| [$func2] \right| =  ``]  [________]{$ans5}

END_PGML

##############################################

BEGIN_PGML_SOLUTION

1.  [`` \left| [$a] \right| = [$ans1] ``]

2.  [``\left| [$b] \right| = [$ans2] ``]

3.  [``\left| [$c] \right| = [$ans3] ``]

4.  [``
       \begin{aligned}[t]
       \left| [$func1] \right| & = \left| [$pro4Step] \right| \\
                              & = [$ans4] 
        \end{aligned}
         ``]

5.  [``
         \begin{aligned}[t]
           \lvert [$func2] \rvert & = \lvert [$pro5Step] \rvert \\
                              & = [$ans5] 
          \end{aligned}
    ``]

END_PGML_SOLUTION

ENDDOCUMENT();


