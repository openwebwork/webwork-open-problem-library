## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBCCSS('6.RP.3c')
## KEYWORDS('percent','decimal','convert')
## DBsection('')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')
## Author('Alex Jordan, Carl Yao, Chris Hughes')
## Institution('PCC')

##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "contextPercent.pl",
  "PGcourse.pl",
);

##############################################

Context("Numeric");

$a=random(1,9,1);
$b=random(0,9,1);
$c=random(1,9,1);
$d=$a+$b/10+$c/100;
$e=$d/10;
$f=$d/100;

$dP=$d*100;
$eP=$e*100;
$fP=$f*100;

Context("LimitedPercent-strict");
Context()->flags->set(
   decimalPlaces => 2,
   tolerance => .00005,
);
$ans1 = Compute("$dP %");
$ans2 = Compute("$eP %");
$ans3 = Compute("$fP %");

##############################################

TEXT(beginproblem());

BEGIN_PGML

Convert the following decimals into percentages:

    [`` [$d] = ``] [_____]{$ans1}

    [`` [$e] = ``] [_____]{$ans2}

    [`` [$f] = ``] [_____]{$ans3}

END_PGML

##############################################

BEGIN_PGML_SOLUTION

To change a decimal to a percentage, we move the decimal point to the right twice.

    [`` [$d] = [$dP]% ``]

    [`` [$e] = [$eP]% ``]

    [`` [$f] = [$fP]% ``]

END_PGML_SOLUTION

ENDDOCUMENT();


