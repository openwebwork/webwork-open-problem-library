## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Coordinate Geometry')
## KEYWORDS('coordinate','cartesian','line','linear','equation','fraction')
## DBCCSS('8.F.1')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
