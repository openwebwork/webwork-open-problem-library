$gr[$j]=$gr[$correct];
$gr[$correct]=$gr[0];
$gr[0]=$gr[$j];

$radio = RadioButtons(
  ["A","B","C","D"],
  "$ar_choice[$correct]", # correct answer
  order => ["A","B","C","D"],
);

