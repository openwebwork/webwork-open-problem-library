["\(y\)-intercept","\(0\)","\($yInt\)","\( (0,$yInt) \)"],
["\(x\)-intercept","\($xInt\)","\(0\)","\( ($xInt,0) \)"],
], allcellcss=>"border:1px solid;padding:4pt;text-align:center;", caption => "\(x\)-intercept and \(y\)-intercept of the line \( x + $b y = $c \)", captioncss =>"padding:4pt; text-decoration:none;");
\}

$ECENTER
$PAR
