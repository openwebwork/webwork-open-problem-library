DOCUMENT();

loadMacros(
  "PGgraphmacros.pl",
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "pccTables.pl",
  "parserRadioButtons.pl",
  "PCCgraphMacros.pl",
  "parserImplicitPlane.pl",
  "parserPopUp.pl",
  "PGcourse.pl",
);

