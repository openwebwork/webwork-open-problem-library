## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Algebraic Expressions')
## KEYWORDS('fraction','order of operations','evaluate','subtract','absolute value')
## DBCCSS('7.NS.1','6.NS.7')
