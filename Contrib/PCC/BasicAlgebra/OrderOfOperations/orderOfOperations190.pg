DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

##############################################

Context("LimitedFraction");
Context()->flags->set(showMixedNumbers=>0,requirePureFractions=>1,requireProperFractions=>1);


@multiples = (2, 3, 4, 5, 6);

$a=random(-10,-2,2);
$b=random(-9,-1,2);
$c=random(-10,-2,2);
while ($c==$a) {$c=random(-10,-2,2);}
$d=random(3,9,2);
$e=random(-8,-2,2);
$f=-2-($e)**2;

$ans=Fraction(($a*$b-$c*$d),(($e)**2+$f));

##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate this expression:

    [`` \frac{([$a])\cdot([$b])-([$c])\cdot[$d]}{([$e])^{2}+([$f])} =  ``]  [________]{$ans} 

END_PGML

##############################################

$step1 = ($e)**2;
$step2 = $a*$b;
$step3 = $c*$d;
$step4 = $step2-$step3;
$step5 = $step1+$f;

BEGIN_PGML_SOLUTION

    [`
\begin{aligned}
 \frac{([$a])\cdot([$b])-([$c])\cdot[$d]}{([$e])^{2}+([$f])}  & = \frac{([$a])\cdot([$b])-([$c])\cdot[$d]}{[$step1]+([$f])}  \\
& = \frac{[$step2]-([$c])\cdot[$d]}{[$step1]+([$f])}  \\
& = \frac{[$step2]-([$step3])}{[$step1]+([$f])}  \\
& = \frac{[$step4]}{[$step5]}  \\
& = [$ans] 
\end{aligned}
`]

END_PGML_SOLUTION

ENDDOCUMENT();


