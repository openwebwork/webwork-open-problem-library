##############################################



DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");


$a=random(-10,-1,1);
$b=random(2,8,1);
$c=random(5,9,1);
$d=random(1,4,1);

$ans=Compute($a-$b*abs($c-$d));

##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate these expressions:

a)    [`` [$a]-[$b]|[$c]-[$d]| =  ``]  [________]{$ans} 

b)    [`` [$a]-[$b]|[$d]-[$c]| =  ``]  [________]{$ans} 

END_PGML

##############################################

$pro1Step1 = $c-$d;
$pro1Step2 = $b*$pro1Step1;

BEGIN_PGML_SOLUTION

a)   [`
\begin{aligned}[t]
 [$a]-[$b]|[$c]-[$d]|  & =  [$a]-[$b]|[$pro1Step1]| \\
& =  [$a]-[$b]\cdot[$pro1Step1] \\
& = [$a]-[$pro1Step2] \\
& = [$ans] 
\end{aligned}
`]

b)    [`
\begin{aligned}[t]
 [$a]-[$b]|[$d]-[$c]|  & =  [$a]-[$b]|-[$pro1Step1]| \\
& =  [$a]-[$b]\cdot[$pro1Step1] \\
& = [$a]-[$pro1Step2] \\
& = [$ans] 
\end{aligned}`]

END_PGML_SOLUTION

ENDDOCUMENT();


