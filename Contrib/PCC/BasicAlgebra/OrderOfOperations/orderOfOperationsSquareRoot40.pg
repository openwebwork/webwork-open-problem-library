##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");

do {
   $sum = list_random(4,9,16,25,36,49,64,81,100);
   $b=random(2,10,1);
   $b2=$b*$b;
   $a=$sum-$b2;
} until ($a!=0);

$ans=sqrt($sum);


##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate this expression:

    [`` \sqrt{[$a]+[$b]^2}= ``][________]{$ans}  

END_PGML

##############################################

BEGIN_PGML_SOLUTION

    [``
\begin{aligned}[t] 
   \sqrt{[$a]+[$b]^2} & = \sqrt{[$a]+[$b2]} \\
   & = \sqrt{[$sum]} \\
   & = [$ans]
\end{aligned}
    ``]

END_PGML_SOLUTION

ENDDOCUMENT();


