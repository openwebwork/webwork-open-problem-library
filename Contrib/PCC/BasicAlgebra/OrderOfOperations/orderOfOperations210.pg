##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");

$a=random(-9,-1,1);
$b=random(2,8,2);
$c=random(-9,-3,2);

$ans=Compute(-($a**2)-abs($b*$c));

##############################################

TEXT(beginproblem());

BEGIN_PGML

Evaluate this expression:

    [`` [$a]^{2}-|[$b]\cdot([$c])| =  ``]  [________]{$ans}

END_PGML

##############################################

$step1 = $b*$c;
$step2 = abs($step1);
$step3 = -$a**2;

BEGIN_PGML_SOLUTION

    [`
\begin{aligned} [$a]^{2}-|[$b]\cdot([$c])| & =  [$a]^{2}-|[$step1]| \\
& =  [$a]^{2}-[$step2] \\
& =  [$step3]-[$step2] \\
& = [$ans] 
\end{aligned}
`]

END_PGML_SOLUTION

ENDDOCUMENT();


