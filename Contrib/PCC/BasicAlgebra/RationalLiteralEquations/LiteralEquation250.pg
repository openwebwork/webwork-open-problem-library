##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGchoicemacros.pl",
  "PCCmacros.pl",
  "contextLimitedFactor.pl",
  "PGcourse.pl"
);

##############################################

Context("LimitedFactor");
Context()->noreduce('(-x)-y','(-x)+y');
$var1 = RandomVariableName(type=>'variable');
do {$var2 = RandomVariableName(type=>'variable');} until ($var1 ne $var2);
do {$var3 = RandomVariableName(type=>'variable');} until ( ($var3 ne $var2) && ($var3 ne $var1) );


$correct = "\( $var1 _{1} + \frac{$var2 _{2}-$var2 _{1}}{$var3} \)";
$wrong1 = "\( $var1 _{1} - \frac{$var2 _{2}-$var2 _{1}}{$var3} \)";
$wrong2 = "\( $var1 _{1} + $var3($var2 _{2} - $var2 _{1}) \)";
$wrong3 = "\( $var1 _{1} - $var3($var2 _{2} - $var2 _{1}) \)";

Context("Numeric");
$mc = new_multiple_choice();
$mc->qa(
  " ", 
  $correct
);
$mc->extra(
   $wrong1,
   $wrong2,
   $wrong3,
);

##############################################

TEXT(beginproblem());

BEGIN_PGML

Solve for [`[$var1] _{2}`] in this expression:

    [`` [$var3] = \frac{[$var2]_{2}-[$var2]_{1}}{[$var1]_{2}-[$var1]_{1}} ``]

END_PGML


BEGIN_TEXT
\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}
END_TEXT

##############################################

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $mc->correct_ans() ) );

##############################################
BEGIN_PGML_SOLUTION

    [``
\begin{aligned}
   [$var3] &= \frac{[$var2] _{2}-[$var2] _{1}}{[$var1] _{2}-[$var1] _{1}} \\
   [$var3] \cdot ([$var1] _{2}-[$var1] _{1}) &= \frac{[$var2] _{2}-[$var2] _{1}}{[$var1] _{2}-[$var1] _{1}} \cdot ([$var1] _{2}-[$var1] _{1}) \\
   [$var3]([$var1] _{2}-[$var1] _{1}) &= [$var2] _{2}-[$var2] _{1} \\
   \frac{[$var3]([$var1] _{2}-[$var1] _{1})}{[$var3]} &= \frac{[$var2] _{2}-[$var2] _{1}}{[$var3]} \\
   [$var1] _{2}-[$var1] _{1} &= \frac{[$var2] _{2}-[$var2] _{1}}{[$var3]} \\
   [$var1] _{2}-[$var1] _{1} \mathbf{+[$var1] _{1}} &= \frac{[$var2] _{2}-[$var2] _{1}}{[$var3]} \mathbf{+[$var1] _{1}} \\
   [$var1] _{2} &= [$var1] _{1} + \frac{[$var2] _{2}-[$var2] _{1}}{[$var3]}
\end{aligned}
    ``]

END_PGML_SOLUTION

ENDDOCUMENT();
