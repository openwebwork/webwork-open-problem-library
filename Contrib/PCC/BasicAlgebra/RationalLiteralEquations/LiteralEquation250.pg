## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Algebraic Expressions')
## KEYWORDS('solve','linear','equation','formula','subscript')
## DBCCSS('A-REI.3')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
