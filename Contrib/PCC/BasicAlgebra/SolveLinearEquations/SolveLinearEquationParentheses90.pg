##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "parserAssignment.pl",
  "PCCmacros.pl",
  "answerHints.pl",
  "contextFraction.pl",
  "SolveLinearEquationPCC.pl",
  "PGcourse.pl"
);

##############################################

Context("Numeric");
$var = RandomVariableName();
Context()->variables->are($var => 'Real');
Context()->noreduce('(-x)-y','(-x)+y');
#to keep the parens from being dropped
Context()->lists->set(AbsoluteValue => {open => "(", close => ")"});
Context()->parens->set("(" => {type => "AbsoluteValue", close => ")", removable=>0});


$a=random(2,10,1);
$ans1 = random(-10,10,1);
$b=random(1,10,1);
$c= $a+$ans1+$b;
while ($c==$a) {
   $ans1 = random(-10,10,1);
   $c= $a+$ans1+$b;
}

$ans2=-($c-$a)-$b;

$left1 = Formula("$a+($var+$b)");
$right1 = Formula("$c");
$left2 = Formula("$a-($var+$b)");
$right2 = Formula("$c");

@vArray = ($var, $var);
@aArray = ($ans1, $ans2);
($ansEqRef, $eqTypesRef) = contextSetup(~~@vArray, ~~@aArray);


##############################################

TEXT(beginproblem());

BEGIN_PGML

[@instructions(~~@vArray)@]**


a)    [`` [$left1]=[$right1]  ``]  

    [_______________________________] 


b)    [`` [$left2]=[$right2]  ``]  

    [_______________________________] 


END_PGML

##############################################

answerCheck($ansEqRef, $eqTypesRef);

##############################################


$step1 = $c-$a+$b;

BEGIN_PGML_SOLUTION

a)    [`
\begin{aligned}[t]
 [$a] +([$var] +[$b])       & =  [$c] \\
 [$a] + [$var] +[$b]        & =  [$c] \\
          [$var] +([$a]+[$b]) & = [$c] \\
          [$var] +[$a+$b]     & =  [$c] \\
          [$var] +[$a+$b]\mathbf{{}-[$a+$b]}& =  [$c]\mathbf{{}-[$a+$b]} \\
          [$var]               & =  [$ans1]
\end{aligned} 
    `]

      [@summary($ansEqRef->[0],$left1,$right1);@]**
 

b)   [`
\begin{aligned}[t]
 [$a] - ([$var] +[$b])       & =  [$c] \\
 [$a] +(-1) \cdot ([$var] +[$b])       & =  [$c] \\
 [$a] + (-1) \cdot [$var] +(-1) \cdot [$b]        & =  [$c] \\
 [$a]    -[$var] -[$b]       & =  [$c] \\
         -[$var] +([$a]-[$b]) & =  [$c] \\
         -[$var] +[$a-$b]     & =  [$c] \\
         -[$var] +[$a-$b]\mathbf{{}-[$a-$b]} & =  [$c]\mathbf{{}-[$a-$b]}  \\
         -[$var]               & = [$step1] \\
       (-1) \cdot (-[$var])       & = (-1) \cdot ([$step1]) \\
         [$var]                 & =  [$ans2] \\
\end{aligned} 
    `]

      [@summary($ansEqRef->[1],$left2,$right2);@]**

END_PGML_SOLUTION

ENDDOCUMENT();

