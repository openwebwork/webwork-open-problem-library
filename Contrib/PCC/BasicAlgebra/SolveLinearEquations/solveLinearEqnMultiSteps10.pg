##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "parserAssignment.pl",
  "PCCmacros.pl",
  "answerHints.pl",
  "contextFraction.pl",
  "SolveLinearEquationPCC.pl",
  "PGcourse.pl"
);

##############################################

Context("Numeric");
$var = RandomVariableName();
Context()->variables->are($var => 'Real');
Context()->noreduce('(-x)-y','(-x)+y');

$a=random(2,10,1);
$ans = random(-10,-2,1);
$b= -$a*$ans;
$c = 0;

$left=Formula("$a*$var+$b");
$right=Formula("$c");

@vArray = ($var);
@aArray = ($ans);
($ansEqRef, $eqTypesRef) = contextSetup(~~@vArray, ~~@aArray);


##############################################

TEXT(beginproblem());

BEGIN_PGML

[@instructions(~~@vArray)@]**

    [`` [$left]=[$right]  ``]  

    [_______________________________] 

END_PGML

##############################################

answerCheck($ansEqRef, $eqTypesRef);

##############################################

BEGIN_PGML_SOLUTION

    [``
\begin{aligned}
 [$a][$var]   	+	[$b]  	&= 	[$c] \\
 [$a][$var]   	+[$b]\mathbf{{}-[$b]}  &= [$c] \mathbf{{}-[$b]} \\
 [$a][$var]	   &=	[$c-$b] \\
 \frac{[$a][$var]}{[$a]} 	&=	\frac{[$c-$b]}{[$a]} \\
 [$var]                  	&=	[$ans]
\end{aligned}
    ``]

[@summary($ansEqRef->[0],$left,$right);@]**

END_PGML_SOLUTION

ENDDOCUMENT();

