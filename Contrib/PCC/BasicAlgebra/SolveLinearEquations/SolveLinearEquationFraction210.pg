DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "parserAssignment.pl",
  "PCCmacros.pl",
  "answerHints.pl",
  "contextFraction.pl",
  "SolveLinearEquationPCC.pl",
  "PGcourse.pl",
);

##############################################

Context("Fraction");
$var = RandomVariableName();
Context()->variables->are($var => 'Real');
Context()->noreduce('(-x)-y','(-x)+y');

$den1 = random(3,9,2);
$num1 = random(2,10,2);
while (gcd($den1,$num1)!=1) {$num1 = random(2,10,2);}

$den2 = $den1*random(2,6,1);
$ans = -$den2*$num1/$den1;

$frac1 = Fraction($num1,$den1);
$left = Formula("-($var/$den2)");
$right = Formula("$frac1");

@vArray = ($var);
@aArray = ($ans);
($ansEqRef, $eqTypesRef) = contextSetup(~~@vArray, ~~@aArray);


##############################################

TEXT(beginproblem());

BEGIN_PGML

[@instructions(~~@vArray)@]**


    [`` [$left]=[$right]  ``]  

    [_______________________________] 

END_PGML

##############################################

answerCheck($ansEqRef, $eqTypesRef);

##############################################

$step1 = $den2*$num1/$den1;

BEGIN_PGML_SOLUTION

To clear fractions in an equation, we multiply each side of the equation by a common denominator. For this problem, a common denominator is [$den2].

    [``
\begin{aligned}
  -\frac{[$var]}{[$den2]} &= \frac{[$num1]}{[$den1]} \\
  [$den2] \cdot \left(-\frac{[$var]}{[$den2]}\right) &= [$den2] \cdot \frac{[$num1]}{[$den1]} \\
  -[$var] &= [$step1] \\
 (-1) \cdot -[$var] &= (-1) \cdot [$step1] \\
  [$var]  &= [$ans]
\end{aligned}
    ``]

[@summary($ansEqRef->[0],$left,$right);@]**

END_PGML_SOLUTION

ENDDOCUMENT();


