## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Algebraic Expressions')
## KEYWORDS('multivariable','multiply','polynomial','FOIL')
## DBCCSS('A-APR.1')
## TitleText1('')
