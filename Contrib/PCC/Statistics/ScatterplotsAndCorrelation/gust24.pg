TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

for($i=0; $i<5; $i++){
	$x[$i] = random(3,17,1);
	$y[$i] = random(15,31,1);
}

$sx =0;
$sy =0;
$sxy =0;
$sx2 =0;
$sy2 =0;
$meanx =0;
$meany =0;

for($i=0; $i<5; $i++) {
	$sx = $sx + $x[$i];
	$sy = $sy + $y[$i];
	$sxy = $sxy + ($x[$i]*$y[$i]);
	$sx2 = $sx2 + ($x[$i]**2);
	$sy2 = $sy2 + ($y[$i]**2);
	$meanx = $meanx+$x[$i];
	$meany = $meany+$y[$i];

}
$meanx = $meanx/5;
$meany = $meany/5;
$ssxy = $sxy-(($sx*$sy)/5);
$ssx = $sx2-(($sx**2)/5);
$ssy = $sy2-(($sy**2)/5);

$r = $ssxy/sqrt($ssx*$ssy);
$b1 = $ssxy/$ssx;
$b0 = $meany-$b1*$meanx;

BEGIN_TEXT
Consider the following small data set.$BR
\{begintable(3)\}
\{row("Subject", "\(x\)", "\(y\)")\}
\{row("\(1\)", "\($x[0]\)", "\($y[0]\)")\}
\{row("\(2\)", "\($x[1]\)", "\($y[1]\)")\}
\{row("\(3\)", "\($x[2]\)", "\($y[2]\)")\}
\{row("\(4\)", "\($x[3]\)", "\($y[3]\)")\}
\{row("\(5\)", "\($x[4]\)", "\($y[4]\)")\}
\{endtable()\}
$BR
Find the correlation between \(x\) and \(y\). $PAR
\(r = \) \{ans_rule(10)\} $BR

END_TEXT
ANS(num_cmp($r));


