Context("Numeric");

#given
$force = random(30, 70, 2);
$SF = random(2, 6, 1);


# Computation:
$diameter = sqrt(( 4 * $force * (10**3) * $SF )/( pi*1030*(10**6) )) * (10**3);

#set tolerance
Context()->flags->set(
tolerance=>.05,
tolType => "relative");

