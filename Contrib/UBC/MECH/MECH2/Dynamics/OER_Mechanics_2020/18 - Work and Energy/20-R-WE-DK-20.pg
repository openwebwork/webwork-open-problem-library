#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale =0.35;

$height = $imgScale*1177;

$width = $imgScale*1306;
	#aspect ratio


#---- Random variables for this problem --------#
$M = random(10,30,1);
$r = random(0.2,0.4,0.05);
$v = random(1.5,3,0.5);
$F = 15;

$theta = 30;
$thetarad = $theta/180*pi;

$W = random(340,400,5);

#---- Formulas to compute answers --------------#
$omega = $v/$r;

$P = $F*$v*cos($thetarad) + $M*$omega;

$n = $P/$W;


