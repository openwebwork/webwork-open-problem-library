Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale =0.35;

$height = $imgScale*1487;

$width = $imgScale*1431;
	#aspect ratio


#---- Random variables for this problem --------#
$a = random(1,3,0.2);
$b = random(0.5,1.5,0.1);

$m = random(1,10,0.5);
$l = random(0.3,0.9,0.1);
$mu = random(0.3,0.45,0.01);

#---- Formulas to compute answers --------------#
$I = 1/12*$m*($a**2+$b**2)+$m*(($b/2)**2+($a/2-$l)**2);

$omegasquaredco = $m*9.81*($a/2-$l)/(0.5*$I);

$rx = ($a/2-$l);
$ry = $b/2;

$alphasin = $m*9.81*$b/2/$I;
$alphacos = $m*9.81*($a/2-$l)/$I;

$N1sin = ($m*9.81 + $m*-$ry*$alphasin + $m*$rx*$omegasquaredco)/$mu;
$N1cos = $m*-$ry*$alphacos/$mu; 

$N2sin = $m*-$rx*$alphasin -$m*$ry*$omegasquaredco;
$N2cos = $m*-$rx*$alhpacos + $m*9.81;

$sin = $N1sin + $N2sin;
$cos = $N2cos + $N1cos;
$tan = $cos/$sin; #confusing but it's the coefficients of sin, cos, and tan

$thetarad = atan($tan);
$theta = $thetarad/pi*180;


