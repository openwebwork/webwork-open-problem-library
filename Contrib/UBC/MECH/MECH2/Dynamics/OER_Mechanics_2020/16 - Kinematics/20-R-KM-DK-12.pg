TEXT(beginproblem());

#######################################################
#Setup


Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.3;
	
$width = $imgScale*1250;
$height = $imgScale*1400; #image aspect ratio

#---- Random variables for this problem --------#
$accelB = random(3,4.9,0.1);
$velB = random(5,7,0.1);
$degA = random(20,30,1);
$length = random(8,12,0.5);

#---- Formulas to compute answers --------------#
$radA = $degA*pi/180;

$angvel = $velB/($length*cos($radA));

$angaccel = ($accelB-($angvel)**2*$length*sin($radA))/($length*cos($radA));
if ($angaccel < 0)
{
	$angaccel = -1*$angaccel;
}

$accelA = $angaccel*$length*sin($radA)-($angvel)**2*$length*cos($radA);
if ($accelA < 0)
{
	$accelA = -1*$accelA;
}

########################################################;
#PGML

BEGIN_PGML	

