#-------------- Image Scaling---------------#
$imgScale =0.35;

$height = $imgScale*1472;

$width = $imgScale*1912;
	#aspect ratio


#---- Random variables for this problem --------#
$mfris = 0.2;
$rfris = 0.135;

$l = random(0.8,1.5,0.1);
$v = random(3,10,0.25);
$mstick = random(0.3,1,0.1);
$e = random(0.7,0.85,0.05);

#---- Formulas to compute answers --------------#

$I = 1/3*$mstick*$l**2;

$vA2 = ($mfris*$v*$l + $e*$v*$mfris*$l)/($I/$l+$mfris*$l);
$vd2 = $vA2 - $e*$v;


