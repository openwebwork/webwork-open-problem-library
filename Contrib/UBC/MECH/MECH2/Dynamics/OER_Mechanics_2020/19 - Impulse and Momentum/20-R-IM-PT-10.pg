#######################################################
#Setup

TEXT(beginproblem());


Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.03,
tolType=>'absolute');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale =0.35;

$height = $imgScale*1573;

$width = $imgScale*2619;
	#aspect ratio


#---- Random variables for this problem --------#
$mc=random(0.25,0.5,0.05);
$l=random(2,7,0.5);
$v=random(700,1000,0.5);
$m1=random(1,5,1);
$m2=random(6,10,1);
$m3=random(11,17,1);
$m4=random(17,25,1);
$r=random(0.15,0.20,0.5);
$theta=random(30,50,0.5);





#---- Formulas to compute answers --------------#

#Conservation of Energy
$h=$l*sin($theta*pi/180);
$angvel2=sqrt(9.81*$h/(1.5*$r**2));

#Conservation of Momentum
$mbullet=(1/2*$mc*$r**2*$angvel2)/($v*$r-1/2*$r**2*$angvel2)*1000;

#Determining the closest mass
if($mbullet>$m4){
$ans=5;
}elsif($mbullet>$m3){
$ans=4;
}elsif($mbullet>$m2){
$ans=3;
}elsif($mbullet>$m1){
$ans=2;
}else{
$ans=1;
}




