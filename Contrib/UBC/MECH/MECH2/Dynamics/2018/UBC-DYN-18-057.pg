#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*2428;
$height = $imgScale*1688;

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
