Context("Numeric");
#given
$r = random(1.5,2.5,.01);
$rd = random(.7,.9,.01);
$rdd = random(.1,.3,.01);

#image scale
$imgScale = 1;

#image aspect ratio
$width = $imgScale*355;
$height = $imgScale*397;

#computation
$vBj = -.5*$r;
$vBi = -$rd;
$vB = sqrt($vBj**2 + $vBi**2);
$wxwxr = .5*.5*$r; #i
$wdxr = -.3*(-$r); #j
$wxvRel = 2*.5*(-$rd); #j
$aRel = -$rdd; #i
$aBi = $wxwxr + $aRel;
$aBj = $wxvRel + $wdxr;
$aB = sqrt($aBi**2 + $aBj**2);

#set tolerance
Context()->flags->set(
tolerance=>.01);

