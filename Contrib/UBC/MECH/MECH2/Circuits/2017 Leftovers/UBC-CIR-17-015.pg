Context("Numeric");
#given
$vs = random(12,36,.5);

#image scale
$imgScale =0.4;

#image aspect ratio
$width = $imgScale*917;
$height = $imgScale*740;

#computation 
$i2 = (48+$vs)/18;
$vTH = 8*4+6*$i2;
$rTH = 12;
$vAB = $vTH*4/(4+$rTH);

#set tolerance
Context()->flags->set(
tolerance=>.01);

