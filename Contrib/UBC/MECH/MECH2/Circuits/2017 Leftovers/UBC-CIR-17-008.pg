Context("Numeric");
#given
$i1 = random(1,4,.1);
$r1 = random(3,5,.1);


#image scale
$imgScale =0.4;

#image aspect ratio
$width = $imgScale*1333;
$height = $imgScale*637;

#computation 
$vBC = $i1*8;
$i2 = $vBC/8;
$i3 = $i1+$i2;
$vAC = $i3*2;
$vAB = $vBC + $vAC;
$i4 = $vAB/4;
$i5 = $i3 + $i4;
$vIn = $vAB + $r1*$i5;

#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

[@ image( "UBC-CIR-17-008.png", width=>[$width], height=>[$height]) @]*

Find the input voltage [`V_{in}`] in the following network when [`R_1=[$r1]`] [`k\Omega`] and [`I_1=[$i1]`] [`mA`].

[`V_{in}=`] [_____]{"$vIn"} [`V`]  

END_PGML

