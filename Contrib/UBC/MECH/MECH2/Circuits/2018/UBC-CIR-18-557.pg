Context("Complex");

#given
$rg1 = random(10,100,5);
$rg1_ohm = $rg1*1000;
$rg2 = random(20,100,10);
$rg2_ohm = $rg2*1000;

#computation 
$gain = 801*($rg1_ohm+$rg2_ohm)/(21*$rg1_ohm+821*$rg2_ohm+200000);

#set tolerance
Context()->flags->set(
tolerance=>.02,
);

