Context("Complex");

#given
$r = random(50,500,50);
$rz = random(50,500,50);

#computation 
$voa = 0.25;
$vob = min(0.2*$rz/($r+$rz)+0.3, 0.7);
$voc = min(0.45*$rz/($r+$rz)+0.3, 0.7);
$vod = min(0.7*$rz/($r+$rz)+0.3, 0.7);
$voe = min(4.7*$rz/($r+$rz)+0.3, 0.7);


#set tolerance
Context()->flags->set(
tolerance=>.02,
);

