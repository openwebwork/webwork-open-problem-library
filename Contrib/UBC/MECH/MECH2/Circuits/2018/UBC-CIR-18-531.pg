Context("Numeric");

#given
$a = random(0.1,1,0.1);
$r = random(20,100,20);


#computation 
$k4 = -20*(36*$a**2*$r**3 - 126*$a**2*$r**2 + 6*$a*$r**2 + 273*$a*$r - 42*$r + 490);
$k5 = (3*$r*(3*$a*$r - 10)*(3*$a*$r - 17));
$k1 = (120*$r + 840*$a*$r - 600*$a*$r**2 + 980)/(- 9*$a*$r**2 + 51*$r);
$k2 = $k4/$k5;
$k3 =(225*$a*$r**2-1275*$r)/(9*$a*$r-10);



#set tolerance
Context()->flags->set(
tolerance=>.02,
);

