##############################################################
#
#  Setup
#
#

Context("Numeric");

#given
$o_gain_display= random(2,8,1);
$o_gain=$o_gain_display*10^5;
$v_s= random(2,10,2);

#computation 
$gain=(200-80000*$o_gain)/(120601+40000*$o_gain);
$v_o=$v_s*$gain;
$v_1= (200* $v_s+ 100*$v_o)/301;
$current= ($v_1-$v_o)/20;
$gain_ideal=-2;

#set tolerance
Context()->flags->set(
tolerance=>.1,
);

##############################################################
#
#  Text 
#
#

BEGIN_PGML

