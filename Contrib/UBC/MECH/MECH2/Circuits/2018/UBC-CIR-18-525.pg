Context("Numeric");

#given
$r = random(3,8,1);
$v1 = random(12,20,2);

#computation 
$energy_resist = (648*$r**2-72*$r*$v1+2*$v1**2)/(25*$r);
$energy_cap = 1/2*2*$v1**2;


#set tolerance
Context()->flags->set(
tolerance=>.02,
);

