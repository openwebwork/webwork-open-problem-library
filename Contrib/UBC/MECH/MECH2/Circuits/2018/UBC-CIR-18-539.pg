Context("Numeric");

#given
$r = random(100,500, 20);

#computation 
$vth=7.5+5*$r;#updated but not tested.
$isc = ($r*10+15)/(2*$r**2+5*$r+2);#updated but not tested.
$isc_display=$isc*1000;
$ro = $vth/$isc;

$max_power = $vth**2/(4*$ro);
$max_power_display=$max_power*1000; 

#set tolerance
Context()->flags->set(
tolerance=>.03,
);

