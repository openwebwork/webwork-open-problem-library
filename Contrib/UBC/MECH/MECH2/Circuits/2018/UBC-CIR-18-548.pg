Context("Complex");

#given
$v1 = random(2, 4, 0.2);
$vcc = random(10, 20, 1);

#computation 
$r1 = ($vcc-$v1)/(0.002+0.003/100);
$r2 = ($vcc-5)/0.003;
$r3 = ($vcc-6)/0.004;
$r4 = (-0.7+$vcc)/(0.002*1.01);
$r5 = ($v1-0.7+$vcc)/(0.003*1.01-0.004/100);
$r6 = ($v1-1.4+$vcc)/(0.004*1.01);

#set tolerance
Context()->flags->set(
tolerance=>.02,
);

