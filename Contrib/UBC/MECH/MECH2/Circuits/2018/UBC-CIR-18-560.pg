   	);

TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Complex");

#given
$vd = random(0.1, 0.5, 0.05);
$rd = random(10, 100, 5);
$r1a = 800;
$rla = 200;
$r1b = 500;
$rlb = 500;
$r1c = 200;
$rlc = 800;
$r1d = 50;
$rld = 950;

#computation 
if($rla/($r1a+$rla)<$vd){
	$voa = $rla/($r1a+$rla);
	$iza = 0;
	$ida = 0;
	$ila = 1/($r1a+$rla);
}
elsif(($rd*$rla+$vd*$rla*$r1a)/($rd*$r1a+$rla*$r1a+$rd*$rla)<0.7){
	$iza = 0;
	$voa = ($rd*$rla+$vd*$rla*$r1a)/($rd*$r1a+$rla*$r1a+$rd*$rla);
	$ida = ($voa-$vd)/$rd;
	$ila = $voa/$rla;
}
else{ 
	$voa = 0.7;
	$ida = (0.7-$vd)/$rd;
	$ila = 0.7/$rla;
	$iza = 0.3/$r1a - $ida - $ila;
}
if($r1b/($r1b+$rlb)<$vd){
	$vob = $r1b/($r1b+$rlb);
	$izb = 0;
	$idb = 0;
	$ilb = 1/($r1b+$rlb);
}
elsif(($rd*$rlb+$vd*$rlb*$r1b)/($rd*$r1b+$rlb*$r1b+$rd*$rlb)<0.7){
	$izb = 0;
	$vob = ($rd*$rlb+$vd*$rlb*$r1b)/($rd*$r1b+$rlb*$r1b+$rd*$rlb);
	$idb = ($vob-$vd)/$rd;
	$ilb = $vob/$rlb;
}
else{ 
	$vob = 0.7;
	$idb = (0.7-$vd)/$rd;
	$ilb = 0.7/$rlb;
	$izb = 0.3/$r1b - $idb - $ilb;
}

if($rlc/($r1c+$rlc)<$vd){
	$voc = $rlc/($r1c+$rlc);
	$izc = 0;
	$idc = 0;
	$ilc = 1/($r1c+$rlc);
}
elsif(($rd*$rlc+$vd*$rlc*$r1c)/($rd*$r1c+$rlc*$r1c+$rd*$rlc)<0.7){
	$izc = 0;
	$voc = ($rd*$rlc+$vd*$rlc*$r1c)/($rd*$r1c+$rlc*$r1c+$rd*$rlc);
	$idc = ($voc-$vd)/$rd;
	$ilc = $voc/$rlc;
}
else{ 
	$voc = 0.7;
	$idc = (0.7-$vd)/$rd;
	$ilc = 0.7/$rlc;
	$izc = 0.3/$r1c - $idc - $ilc;
}

if($rld/($r1d+$rld)<$vd){
	$vod = $rld/($r1d+$rld);
	$izd = 0;
	$idd = 0;
	$ild = 1/($r1d+$rld);
}
elsif(($rd*$rld+$vd*$rld*$r1d)/($rd*$r1d+$rld*$r1d+$rd*$rld)<0.7){
	$izd = 0;
	$vod = ($rd*$rld+$vd*$rld*$r1d)/($rd*$r1d+$rld*$r1d+$rd*$rld);
	$idd = ($vod-$vd)/$rd;
	$ild = $vod/$rld;
}
else{ 
	$vod = 0.7;
	$idd = (0.7-$vd)/$rd;
	$ild = 0.7/$rld;
	$izd = 0.3/$r1d - $idd - $ild;
}

$voa = Formula("$voa");
$ida = Formula("$ida");
$ila = Formula("$ila");
$iza = Formula("$iza");

$vob = Formula("$vob");
$idb = Formula("$idb");
$ilb = Formula("$ilb");
$izb = Formula("$izb");

$voc = Formula("$voc");
$idc = Formula("$idc");
$ilc = Formula("$ilc");
$izc = Formula("$izc");

$vod = Formula("$vod");
$idd = Formula("$idd");
$ild = Formula("$ild");
$izd = Formula("$izd");

#set tolerance
Context()->flags->set(
tolerance=>.02,
);

##############################################################
#
#  Text 
#
#

BEGIN_PGML

[@ image("UBC-CIR-18-560.png", width=>[$width], height=>[$height]) @]*

For the given circuit, Solve for [`V_O`], [`I_D`], [`I_L`], and [`I_Z`] for the following cases. Take [`V_S = 1`] [`V`], [`V_D = [$vd]`] [`V`], [`R_D = [$rd]`] [`\Omega`], and [`V_Z = 0.7`] [`V`].

*a)* [`R_1 = [$r1a]`] [`\Omega`], [`R_L = [$rla]`] [`\Omega`]  
*b)* [`R_1 = [$r1b]`] [`\Omega`], [`R_L = [$rlb]`] [`\Omega`]  
*c)* [`R_1 = [$r1c]`] [`\Omega`], [`R_L = [$rlc]`] [`\Omega`]  
*d)* [`R_1 = [$r1d]`] [`\Omega`], [`R_L = [$rld]`] [`\Omega`]  


END_PGML

BEGIN_TEXT

$PAR
\{
	DataTable(
		[
			['','\(V_O\) \(V\)','\(I_Z\) \(A\)','\(I_L\) \(A\)','\(I_D\) \(A\)'],
			["$BBOLD a) $EBOLD",ans_rule(10),ans_rule(10),ans_rule(10),ans_rule(10)],
			["$BBOLD b) $EBOLD",ans_rule(10),ans_rule(10),ans_rule(10),ans_rule(10)],
			["$BBOLD c) $EBOLD",ans_rule(10),ans_rule(10),ans_rule(10),ans_rule(10)],
			["$BBOLD d) $EBOLD",ans_rule(10),ans_rule(10),ans_rule(10),ans_rule(10)],
		],
		center => 0,
		allcellcss=>'padding-left:20px; padding-right:20px; border: solid thin #CCCCCC;',
		);
\}
$PAR
END_TEXT

ANS($voa->cmp);
ANS($iza->cmp);
ANS($ila->cmp);
ANS($ida->cmp);

ANS($vob->cmp);
ANS($izb->cmp);
ANS($ilb->cmp);
ANS($idb->cmp);

ANS($voc->cmp);
ANS($izc->cmp);
ANS($ilc->cmp);
ANS($idc->cmp);

ANS($vod->cmp);
ANS($izd->cmp);
