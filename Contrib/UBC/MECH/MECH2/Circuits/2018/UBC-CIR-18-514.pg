Context("Numeric");

#given
$V1 = non_zero_random(-10,10,0.5);
$V2 = non_zero_random(-10,10,0.5);
$V3 = non_zero_random(-10,10,0.5);
$V4 = non_zero_random(-10,10,0.5);
$R = random(10,80,1);
$I = non_zero_random(-4,4,0.2);

#computation 
$Va = -2*(3*$V1 + 3*$V2 - 4*$V3) / 11;
$Vb = -6*($V1 + $V2) / (8*$V4 + 11);
$Vc = -2*(3*$V1 - $V2) / 27;
$Vd = -2*(3*$V1 - $V2) / (320 * $I + 27);


#set tolerance
Context()->flags->set(
tolerance=>.02,
);

