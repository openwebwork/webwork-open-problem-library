Context("Numeric");

#given
$r = random(3,10,1);
$a = random(3,7,1);

#computation 
$v1numer = (12*(5*$r - $a + 6*$a*$r - 4*$a*$r**2 + $r**2));
$v1denom = (- 24*$r**2 + 23*$r + 2*$a);
$v1 = $v1numer/$v1denom;
$v2numer = (12*(2*$a + 5*$r - 2*$a*$r + $r**2));
$v2denom = (- 24*$r**2 + 23*$r + 2*$a);
$v2 = $v2numer/$v2denom;
$v3 = 12;
$v4numer = (12*(2*$a + 14*$r - 2*$a*$r - 23*$r**2 + 12*$r**3));
$v4denom = (- 24*$r**2 + 23*$r + 2*$a);
$v4 = $v4numer/$v4denom;


#set tolerance
Context()->flags->set(
tolerance=>.02,
);

