DOCUMENT();

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*3048;
$height = $imgScale*2847;

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
	"PGauxiliaryFunctions.pl",
	"niceTables.pl",
	#"source.pl",        # allows code to be displayed on certain sites.
	#"PGcourse.pl", 	 # Customization file for the course
   	);

TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Complex");

#given
$r_1 = random(150, 300, 10);
$r_2 = random(100, 150, 10);
$r_3 = 0.5*$r_1;
$r_4 = 1.5*$r_1;

#computation 
if(9*$r_2/($r_2+$r_1)>1){
	$ib = 0;
	$vb = 1-9*$r_2/($r_2+$r_1);
}
else{
	$vb = 0;
	$ib = (8/3*$r_1+64/3*$r_2)/(11/3*$r_1*$r_2+$r_1**2);
}
$va = 9*$r_2*$r_1/($r_1**2+3*$r_1*$r_2);
$ia = $va/(0.5*$r_1);

#set tolerance
Context()->flags->set(
tolerance=>.02,
);

##############################################################
#
#  Text 
#
#

BEGIN_PGML

[@ image("UBC-CIR-18-545.png", width=>[$width], height=>[$height]) @]*

Solve for the currents and voltages if [`R_1 = [$r_1]`] [`\Omega`], [`R_2 = [$r_2]`] [`\Omega`], [`R_3 = [$r_3]`] [`\Omega`], and [`R_4 = [$r_4]`] [`\Omega`]. Assume the diodes are ideal.

[`I_a=`] [_____]{"$ia"} [`A`]  
[`V_a=`] [_____]{"$va"} [`V`]  
[`I_b=`] [_____]{"$ib"} [`A`]  
[`V_b=`] [_____]{"$vb"} [`V`]  

END_PGML

