##############################################################
#
#  Setup
#
#

Context("Complex");

#given
$r_1 = random(100, 200, 10);
$r_2 = random(50, 100, 5);

#computation 
$vo_1 = $r_2*(1.4*$r_1+50)/($r_1*$r_2+10*$r_1+10*$r_2);
$vo_2 = (7*$r_1+250)/(5*$r_1+50);
$vo_3 = $vo_1-0.1;
$vs_3 = $r_1*(($vo_3-1.4)/10+$vo_3/$r_2)+$vo_3;
$vs_4 = 10-$vs_3;
$vo_4 = $r_2*(1.4*$r_1+10*$vs_4)/($r_1*$r_2+10*$r_1+10*$r_2);


#set tolerance
Context()->flags->set(
tolerance=>.02,
);

