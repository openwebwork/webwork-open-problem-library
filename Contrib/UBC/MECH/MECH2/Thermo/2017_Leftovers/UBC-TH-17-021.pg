Context("Numeric");
#given
$x = random(.002,.006,.0001);
$gamma =1.4;

#computation 
$R = 8.314/28;
$m = (10**5)*$x/($R*300.15*1000);
$cv = $R/($gamma-1);
$q = $m*$cv*100*1000;
$deltaS = $m*$cv*ln(400.15/300.15)*1000;

#set tolerance
Context()->flags->set(
tolerance=>.01);

