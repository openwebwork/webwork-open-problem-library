Context("Numeric");
#given
$x = random(20000,500000,1000);


#computation 
$vSpec = 287*380.15/1000000;
$v2 = $vSpec*100000*(1/$x)**(1/1.2);
$tFinal = 38.015*($x**(1/6));
$deltaU = .287/.4*($tFinal-380.15);
$work = .287/.2*($tFinal-380.15);
$q = $deltaU+$work;
$deltaS = .287/.4*ln($tFinal/380.15)+.287*ln($v2/$vSpec);


#set tolerance
Context()->flags->set(
tolerance=>.01);

