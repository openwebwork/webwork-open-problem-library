    ["\([0, 2, -1]\)", "\([2, 1, -1]\)"],
    "\([2, 1, -1]\)",
    labels => "ABC");

$mc2 = RadioButtons(
  ["\([0, 2, -1]\)", "\([2, 1, -1]\)"],
     "\([0, 2, -1]\)",
    labels => "ABC");

##############################################################
#
#  PGML area
#
#
BEGIN_PGML

Determine the Miller Indices for the planes shown in the following unit cell:

[@ image( "UBC-MAT-16-007.png", width=>[$width], height=>[$height]) @]* 

END_PGML

BEGIN_TEXT
$BR
Plane A:
$BR
\{ $mc1->buttons() \}
$BR
$BR
Plane B:
$BR
\{ $mc2->buttons() \}
$BR
END_TEXT
