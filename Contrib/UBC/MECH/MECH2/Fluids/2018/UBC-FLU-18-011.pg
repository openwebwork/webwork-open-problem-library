Context("Numeric");
#given
$LeakPressureTmp = random(5000,13000,400); #[psig]

#computation
$LeakPressure = $LeakPressureTmp*6894.75729;
$Ans = $LeakPressure/(9.81*1028)/1000; #[km]

#set tolerance
Context()->flags->set(
tolerance=>.1,
tolType=>'absolute');

