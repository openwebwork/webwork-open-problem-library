Context("Numeric");
#given
$V1= random(2,4,0.05);# [m/s]
$P1= random(90,100,1);# [kpa]

#computation
$Ans = -$P1*2600/(10**3)+999*2600*$V1/(10**6)*(-$V1-$V1*2600/650);#[N]

#set tolerance
Context()->flags->set(
tolerance=>.01,);

