   	);

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$w1 = random(5,15,1);
$w2 = random(50,50,1);
$w3 = random(10,30,1);

#image scale
$imgScale =0.3;

#image aspect ratio
$width = $imgScale*1604;
$height = $imgScale*1028;

#computation 
$rC = 1/6*(4.5*$w1 + 5*$w2*sin(45*pi/180) + 17/3*$w3);
$rAv = 3*$w1+$w2*sin(45*pi/180)+ $w3 -$rC;
$rAh = $w2*cos(45*pi/180);
$rA = sqrt($rAv**2 +$rAh**2);

#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

[@ image( "UBC-SM-17-022.png", width=>[$width], height=>[$height]) @]*

Calculate reactions at supports [`A`] and [`C`] considering the load conditions following figure if the following parmeters are true:  
[`w_1=[$w1]`] [`kN/m`]  
[`w_2=[$w2]`] [`kN`]  
[`w_3=[$w3]`] [`kN`]  

[`R_A = `] [_____]{"$rA"} [`kN`]  
[`R_C = `] [_____]{"$rC"} [`kN`]  

END_PGML

