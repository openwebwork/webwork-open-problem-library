##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$w1 = random(10,30,1);
$w2 = random(5,15,1);

#image scale
$imgScale =0.3;

#image aspect ratio
$width = $imgScale*1421;
$height = $imgScale*853;

#computation 
$y = 1/5*(12.5*$w2 - $w1);
$x = $w1 + 5*$w2 - $y;

#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#	
#

BEGIN_PGML

[@ image( "UBC-SM-17-018.png", width=>[$width], height=>[$height]) @]*

Find the reactions on supports [`x`] and [`y`] if the following loading conditions are true:  
[`w_1=[$w1]`] [`kN`]  
[`w_2=[$w2]`] [`kN/m`]    

[`x`] = [_____]{"$x"} [`kN`]  
[`y`] = [_____]{"$y"} [`kN`]  

END_PGML

