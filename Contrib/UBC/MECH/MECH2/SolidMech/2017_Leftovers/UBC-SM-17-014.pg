   	);

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$w1 = random(20,40,1);
$w2 = random(10,30,1);
$w3 = random(25,55,1);

#image scale
$imgScale =0.3;

#image aspect ratio
$width = $imgScale*2091;
$height = $imgScale*798;

#computation 
$b = 1/6*($w1+13.5*$w2+9*$w3);
$a = $w1 + 3*$w2 + $w3 - $b;


#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#	
#

BEGIN_PGML

[@ image( "UBC-SM-17-014.png", width=>[$width], height=>[$height]) @]*

Calculate the reactions at the supports [`A`] and [`B`] of the overhanging beam shown in the figure given the following parameters:
[`w_1=[$w1]`] [`kN`]  
[`w_2=[$w2]`] [`kN/m`]  
[`w_3=[$w3]`] [`kN`]  

[`A`] = [_____]{"$a"} [`kN`]  
[`B`] = [_____]{"$b"} [`kN`]   

END_PGML

