#image aspect ratio
$widthA = $imgScaleA*1524;
$heightA = $imgScaleA*1017;
$widthB = $imgScaleB*864;
$heightB = $imgScaleB*404;

#computation 
$dadb = $oa/($oa+$ab);
$deltaA = $dadb*$deltaB;
$eca1 = $deltaA/($ca*1000);
$edb1 = $deltaB/($db*1000);
$eca2 = ($deltaA-$delta)/($ca*1000);
$edb2 = $edb1;
$eca3 = $eca1;
$edb3 = ($deltaB-$delta)/($db*1000);


