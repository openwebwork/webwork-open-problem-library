##############################################################
#
#  Setup
#
#

Context("Numeric");

#given
$span = 3;
$area = 3900;
$e = 200;
$p = 475;
$disp = 1.5;

#computation 
$deltab = $p *$span/$e/$area*1000;
$pmax = $e * $area / $span * $disp/1000;

$a = $span/sqrt(2);
$c = $span*sqrt(3/2);
$by = $p * $span/2/$a;
$ay = $p - $by;
$cz = ($ay * $span - $p * $span/2)/($span/2);
$ax = -$p;
$az = -$cz - $bz;
$fab = -$c/$a * $ax;
$fac = sqrt(2) * -$ay;
$fbc = -2*$by;
$deltaAB = $fab*$c/$e/$area;
$beta = arctan($span/$a);
$deltaBx = $deltaAB/cos($beta)*1000;
$pmax2 = $disp/$deltaBx*$p;

#set tolerance
Context()->flags->set(
tolerance=>.1,
tolType=>'absolute');

