DOCUMENT();

#image scale
$imgScale = .5;

#image aspect ratio
$width = $imgScale*399;
$height = $imgScale*472;

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
