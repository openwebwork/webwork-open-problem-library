DOCUMENT();

#image scale
$imgScale = .5;

#image aspect ratio
$width = $imgScale*515;
$height = $imgScale*312;

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
