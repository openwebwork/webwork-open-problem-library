DOCUMENT();

#image scale
$imgScale = .5;

#image aspect ratio
$width = $imgScale*452;
$height = $imgScale*218;

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
