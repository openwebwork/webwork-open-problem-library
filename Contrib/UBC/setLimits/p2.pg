$ap1 = 1 + $a;
$bp1 = 1 + $b;

ANS(num_cmp($a, strings=>['DNE']))  ;
ANS(num_cmp($a, strings=>['DNE']))  ;
ANS(num_cmp($a, strings=>['DNE']))  ;
ANS(num_cmp($ap1, strings=>['DNE']));
ANS(num_cmp($b, strings=>['DNE']))  ;
ANS(num_cmp($bp1, strings=>['DNE']));
ANS(num_cmp('DNE', strings=>['DNE'])) ;
ANS(num_cmp($bp1, strings=>['DNE']));
