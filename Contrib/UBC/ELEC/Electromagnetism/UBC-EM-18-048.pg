Context("Numeric");

#given
$a = random(2,8,2);
$I = random(.2,.8,.2); 
$Bx = random(.2,.55,.05);
$By = random(.05,.25,.05);
$Bz = random(.5, .95, .05);

#computation 
$axA = -$I*$a*$a*$By;
$ayA = 0;
$azA = 0;

$axB = -$I*$a*$a*$By;
$ayB = $I*$a*$a*$Bx;
$azB = 0;

$axC = -$I*$a*$a*$By;
$ayC = $I*$a*$a*$Bx;
$azC = 0;

$axD = $I*5*$a*$Bx;
$ayD = $a*$I*(4*$Bz+($a/2-2)*$Bx);
$azD = -$I*5*$a*$Bz;

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

