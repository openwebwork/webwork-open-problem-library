Context("Numeric");


#given
$d = random(0.2, 2, 0.2);# m
$Vo = random(10, 100, 5);# V
$x = 1/2*$d;# m
$S = random(10, 50, 5);# m2.

$eps0 = 8.854187817;

#computation 
$v = $Vo/log(2)*log(1 + $x/$d);
$e = -$Vo/log(2)/($x + $d);
$p = -$eps0 * $x * $Vo / $d/($x + $d)/log(2);
$rhops1 = 0;
$rhops2 = -$eps0*$Vo/2/$d/log(2);
$c = $eps0*$S/$d/log(2);

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

