##############################################################
#
#  Setup
#
#

Context("Numeric");


#given
$R = random(1, 2, 0.1); #m
$rhov = random(1, 5, 0.1); #nC/m3

#computation 
$psi = pi*$rhov*$R**3/8;

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

