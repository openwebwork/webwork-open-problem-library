Context("Numeric");

do{

	#given
	$mur = random(2,9,1);
	$r = random(2,9,1);
	$i = random(2,9,1);
	$d = random(2,9,1);
	
}while($d>=$r);

#computation 
$Ans = ($mur-1)*$i*$d*1000/2/pi/$r/$r;

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

