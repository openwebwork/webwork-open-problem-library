Context("Numeric");


#given
$I=random(1,2,.1);
$R = random(.5,3,.5);
$n = random(3000,5000,100);
$x1 = random(-.8*$R,.8*$R,.1);
$x2 = random(1.2*$R,1.8*$R,.1);

$mu0 = 4*pi/10**7;

#computation 
$a = 2/3*$mu0*$n*$I*1000;
$b = 2/3*$mu0*$n*$I*$R**3/($x2**3)*1000;


#set tolerance
Context()->flags->set(
tolerance=>.01,
);

