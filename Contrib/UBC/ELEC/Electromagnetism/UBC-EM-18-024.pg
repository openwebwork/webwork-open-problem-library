Context("Numeric");

#image scale
$imgScale = .5;

#image aspect ratio
$width = $imgScale*511;
$height = $imgScale*518;

#given
$R1 = random(.1,.5,.05);
$R2 = random(2,3,.1);
$a = random(0.8,1.8,.1);
$e1 = random(3,4,.1);
$e2 = random(2,2.8,.1);
$Q = random(10,20,1);

$eps0 = 8.854187817/(10**12);

#computation 
$A = ($e1 - 1)*$Q/(4*pi*$e1*$R1*$R1);
$B = ($e2 - $e1)*$Q/(4*pi*$e1*$e2*$a*$a);
$C = -($e2 - 1)*$Q/(4*pi*$e2*$R2*$R2);

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

