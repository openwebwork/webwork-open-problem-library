Context("Numeric");

#given
$z = random(2,9,1);
$d = random(2,9,1);

#computation 
$Ans = 1000/pi*$z/$d/sqrt($z**2+$d**2);

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

