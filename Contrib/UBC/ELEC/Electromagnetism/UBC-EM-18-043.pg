#image scale
$imgScaleA = .3;
$imgScaleB = .3;

#image aspect ratio
$widthA = $imgScaleA*816;
$heightA = $imgScaleA*479;
$widthB = $imgScaleB*1615;
$heightB = $imgScaleB*491;

Context("Numeric");

#given
$R = random(1,9,.2);
$I = random(1,8,1);
$notA = random(.25,.75,.25);
$a = $R*$notA;

$A = PopUp(["?","A","B","C"], "A");
$B = PopUp(["?","A","B","C"], "B");
$C = PopUp(["?","A","B","C"], "C");

if($notA == .25){
	$mcCorrect = $A;
}
elsif($notA == .5){
	$mcCorrect = $B;
}
else{
	$mcCorrect = $C;
}

#computation 


#set tolerance
Context()->flags->set(
tolerance=>.01,
);

