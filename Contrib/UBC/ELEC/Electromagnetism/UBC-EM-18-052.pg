##############################################################
#
#  Setup
#
#

Context("Numeric");

#given
$N = random(800, 1400, 100);#
$I = random(0.3, 0.6, 0.01);# A
$n = random(1,3,1);
$S = 480*10**(-6);
$mu0 = pi*4*10**(-7);

#computation 

if($n==1){
	$b = .6;
	$h = 100;
	$psi = 2.88E-4;
}

elsif($n==2){
	$b = 1;
	$h = 200;
	$psi = 4.8E-4;
}

else{
	$b = 1.2;
	$h = 400;
	$psi = 5.76E-4;
}

#Incorrect
# $l = 4*pi*($N*$I - $h*196/1000)*4.8/$psi/10000;

# CJ was here March 25, 2019
$l = $mu0*$S*1000*($N*$I - $h*196/1000)/$psi; 
#set tolerance
Context()->flags->set(
tolerance=>.01,
);

