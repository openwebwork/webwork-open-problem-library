Context("Numeric");

#given
$r = random(0.5, 1.5, 0.1);# mm
$B = random(0.050, 0.090, 0.005);# T
$V = random(0.1, 0.5, 0.05);# mV

#computation 
$v = $V/2/$r/$B;

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

