END_PGML

ANS($eq->cmp);
ANS($hn->cmp);
ANS(num_cmp($ans3, reltol => 1));
ANS(num_cmp($ans4, reltol => 1));
ANS(num_cmp($ans5, reltol => 1));
ANS(num_cmp($ans6, reltol => 1));
ANS(num_cmp($ans7, reltol => 1));
ANS(num_cmp($ans8, reltol => 1));

