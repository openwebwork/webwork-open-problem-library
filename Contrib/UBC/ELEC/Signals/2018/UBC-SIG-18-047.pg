$ansC = Matrix("[[$b_1,$a_1,1]]");
$ansD = Matrix("[[0]]");

$Hs = Formula("(s^2+$a_1 s + $b_1)/(s^3 + $a_2 s^2 + $b_2 s + $c_2)");

$ansAp = Matrix("[[0,0,-$c_2],[1,0,-$b_2],[0,1,-$a_2]]");
$ansBp = Matrix("[[$b_1],[$a_1],[1]]");
