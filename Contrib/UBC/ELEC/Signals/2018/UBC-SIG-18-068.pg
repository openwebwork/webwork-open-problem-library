#image scale
$imgScale = .15;

#image aspect ratio
$width = $imgScale*4262;
$height = $imgScale*1118;

loadMacros(	"PGstandard.pl",     # Standard macros for   PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
