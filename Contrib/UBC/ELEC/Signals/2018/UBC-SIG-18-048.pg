TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Matrix");
Context()->variables->add(n=>"Real");

#given
$a = random(2, 9, 1);
$b = random(2, 9, 1);
$c = random(2, 9, 1);
do{
$d = random(2, 9, 1);
}while ($d==$a);
$e = random(2, 9, 1);

#computation 
$ansA = Matrix("[[$a,0],[$a* $b + $c,$d]]");
$ansB = Matrix("[[1],[$b]]");
$ansC = Matrix("[[0,$e]]");
$ansD = Matrix("[[0]]");

$hn = Formula("(($a*$b + $c)*$e*$a^(n - 1)+($b*$e($a - $d)-$e*($a*$b + $c))*$b^(n-1))/($a-$d)");

