Context("Complex");

#given
$a = random(2, 6, 1);
$b = random(2, 9, 1);

#computation 
$ans = $b * tan(pi/(4*$a**2));

#set tolerance
Context()->flags->set(
tolerance=>.001,
tolType => 'absolute');

