@data = rserve_eval('

n <- round(runif(1, min=10, max=18),0)
p <- round(runif(1, min=100, max=200),0)
spec_true = function(omega){
  (1 + beta^2) * sigma^2 / pi * (1 + 2 * beta * cos(2 * pi * omega) / (1 + beta^2))
}

# a)
