###Random number generator seed based on student's login. No need to change.
Context("Numeric");
# warn("Student name: $studentName, login: $studentLogin, id: $studentID");
my $hash = crypt($studentLogin, 'a1');
# warn("crypt: $hash");
@nums = (0..9,'a'..'z','A'..'Z');
my %nums = map { $nums[$_] => $_ } 0..$#nums;
my $seed = 0;
$seed = $seed * 62 + $nums{$_} foreach split(//, substr($hash, -5, 5));
##warn("seed: " . $seed);

####Call R server
rserve_eval("set.seed($seed)"); ## can not combine with the rest


@a=rserve_eval('
a <- sample(seq(from=4000,to=8000,by=500),size=1)
');

@b=rserve_eval('
b <- sample(7:13, size=1)
');

@c=rserve_eval('
c <- sample(18:25, size=1)
');


@s2_btwn=rserve_eval('
s2_btwn <- a^2/4
round(s2_btwn, 3)
');

@s2_wthn=rserve_eval('
s2_wthn <- 0.5*b*10^6 + 0.5*c*10^6
');

@s2_ttl=rserve_eval('
s2_ttl <- s2_btwn + s2_wthn
');

@w=rserve_eval('
w <- sqrt(b)/(sqrt(b)+sqrt(c))
round(w, 3)
');


#######answers_q1
@q1=rserve_eval('
tem<-round(100*(1-sqrt(s2_wthn/s2_ttl)),1)
');

@q1_pre=rserve_eval('
tem<-round(sqrt(s2_wthn/s2_ttl), 4)
');

#######answers_q2
@q2=rserve_eval('
tem<- round(100*(1-sqrt( (b/w+c/(1-w))/(2*b+2*c) )),1)
');

@q2_pre=rserve_eval('
tem<- sqrt(0.5*b/w + 0.5*c/(1-w))/sqrt( 0.5*b/0.5 +0.5*c/0.5)
round(tem, 4)
');

