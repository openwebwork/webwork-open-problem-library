$file = rserve_start_plot('png');
rserve_eval("
  par(mfrow=c(2,1))
  acf(ts1.sim, main='Acf for Series 1')
  pacf(ts1.sim, main='Pacf for Series 1')
  ");
$filepath1 = rserve_finish_plot($file);

