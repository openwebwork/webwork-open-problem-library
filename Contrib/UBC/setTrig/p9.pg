DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "problemPanic.pl",
  "PGcourse.pl"
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,8,1);
$tag = random(0,1,1);

@funct = ('\sin','\cos');
@g = (Formula("sin($a x)"),Formula("cos($a x)"));
@dg = ('\cos','\sin');
@sign = (' ','-');
@g2 = ('\sin^2','\cos^2');


$f = Formula("arctan($g[$tag])");
$df = $f->D;

Context()->normalStrings;
TEXT(EV2(<<EOT));
Let \[ f(x) = \tan^{-1} ( $funct[$tag] ($a x) ) \]
$PAR
\( f'( x ) = \) \{ans_rule(40) \}

$PAR
EOT
Context()->normalStrings;

ANS($df->cmp() );

Context()->texStrings;
BEGIN_TEXT
  \{Panic::Button(label => "HINT", penalty => .25)\}
    (you will lose 25% of your points)
END_TEXT
Context()->normalStrings;

 if ($panicked) {
      BEGIN_TEXT
       $PAR $BBOLD Hint: $EBOLD Remember that if \(f(x) = tan^{-1}g(x)\), then \(f'(x) = \frac{g'(x)}{1+(g(x))^2}\).  In this case \(g(x) = $funct[$tag] ($a x)\).
      END_TEXT
    }

# this allows the student to get part marks and see which answers they got right
install_problem_grader(~~&avg_problem_grader);

Panic::GradeWithPenalty;

SOLUTION(EV3(<<'END_SOLUTION') );
$PAR SOLUTION $PAR
Remember that if \(f(x) = tan^{-1}g(x)\), then \(f'(x) = \frac{g'(x)}{1+(g(x))^2}\).  In this case \(g(x) = $funct[$tag] ($a x)\).

$PAR
\(f'(x) = $sign[$tag]\frac{$a $dg[$tag]($a x)}{1+$g2[$tag]($a x)}\).

END_SOLUTION

ENDDOCUMENT();        # This should be the last executable line in the problem.
