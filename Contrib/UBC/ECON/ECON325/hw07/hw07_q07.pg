####Call R server
rserve_eval("set.seed($seed)"); ## can not combine with the rest

@n1=rserve_eval('
n1 <- sample(10:15, 1)
');

@n2=rserve_eval('
n2 <- sample(18:28, 1)
');

@v=rserve_eval('
v <- sample(40:90, 1)
');

@s=rserve_eval('
s<- sqrt(v)
');

@m=rserve_eval('
m <- sample(200:400, 1)
');

@crn1=rserve_eval('
crn1=qt(0.025, df=n1-1, lower.tail=T)
round(crn1, 4)
');

@crn2=rserve_eval('
crn2=qt(0.025, df=n2-1, lower.tail=T)
round(crn2, 4)
');


@q1=rserve_eval('
re1<-m+crn1*s/sqrt(n1)
round(re1, 2)
');

@q2=rserve_eval('
re2<-m - crn1*s/sqrt(n1)
round(re2, 2)
');

@q3=rserve_eval('
re3<-m + crn2*s/sqrt(n2)
round(re3, 2)
');

@q4=rserve_eval('
re4<-m - crn2*s/sqrt(n2)
round(re4, 2)
');

$q1ans =@q1[0];
$q2ans =@q2[0];
$q3ans =@q3[0];
$q4ans =@q4[0];

