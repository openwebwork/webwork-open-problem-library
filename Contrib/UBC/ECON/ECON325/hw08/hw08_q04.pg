if(re2<0.01){
rd<-1  
}
rd
');

$ans_d_correct = $ans_d_correct[0];

$qu_d = "Can the null hypothesis be rejected at a 1% significant level?";

@ans_d_all = ("Do not reject the null hypothesis.",
