@p1 = rserve_eval('
x <-rnorm(n=100, mean=0, sd=1)
x1 <- x[x>1]
x2 <- x[0<x & x<0.1]
x3 <- x[0.1<x & x<0.4]
x4 <- x[0.4<x & x<0.7]
x5 <- x[0.7<x & x<1]
x6<-100-length(c(x1, x2, x3, x4, x5))
p1 <- round(length(x1)/100, 2)
');

@p2 = rserve_eval('
p2 <- round(length(x2)/100, 2)
');

@p3 = rserve_eval('
p3 <- round(length(x3)/100, 2)
');

@p4 = rserve_eval('
p4 <- round(length(x4)/100, 2)
');

@p5 = rserve_eval('
p5 <- round(length(x5)/100, 2)
');

@p6 = rserve_eval('
p6<-round(x6/100, 2)
');

@q1= rserve_eval('
round(p3+p6, 2)
');

@q2= rserve_eval('
round(p1+p2+p3, 2)
');

@q3= rserve_eval('
round(p3/(p3+p6), 2)
');

@q4= rserve_eval('
round(p3/(p1+p2+p3), 2)
');

@q5= rserve_eval('
round((p2+p3)/(p5+p2+p3+p6), 2)
');


$q1ans = @q1[0];
$q2ans = @q2[0];
$q3ans = @q3[0];
$q4ans = @q4[0];
