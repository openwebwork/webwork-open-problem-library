TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

#define the variables
$ad=random(1,10,.1);
$adi=int($ad);
$ij=random($ad+3,$ad+10,.1);
$ed=random(1,5,.1);
$jb=random(2,4,.1);
$ef=random(5,15,.1);
$eh=$ij-$ad;
$hl=$jb + $ed;
$area=$jb*$ij+$ed*($ij-$ad);
$area1=$ad * $ef;
$area2=$ef*($ij - $ad);
$area3=$jb * $ef;
$area4=$ed * $ef;
$area5=($ed +$jb) * $ef;
$area6=$ij*$ef;
$areatot=2*($area+$ij*$ef+$ef*($jb+$ed));
$vol=$area*$ef;


# calculate the table rows  
@row0 = ( '  segment ', '  AD  ', '  IJ  ', '  ED  ','  EF  ', '  JB  ' );
@row1 = ( ' measure ', $ad, $ij, $ed, $ef, $jb ); 


