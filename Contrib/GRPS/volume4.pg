## DBchapter(Geometry_Figures)
## Institution(GRPS)
## Author(Louise Wilson)
## KEYWORDS('volume', 'surface area')
## RESOURCES('area8.gif')

DOCUMENT();     
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

#define the variables
$x=random(2,5,1);
$h=random(7,15,1);
$s=sqrt($x**2+$h**2);

$area=(4*$s*$x+4*$x**2);
$volume=4*$x**2*$h/3;



TEXT(EV2(<<EOT));
\{image "area8.gif", height=>240, width=>270 \} $BR $BR
The square pyramid has half side \( x= $x cm \) and height \( y = $h cm \) . $BR
The volume is \{ans_rule(10) \} \( cm ^3 \) . $BR

The surface area is 
  \{ans_rule(10) \} \( cm ^2 \) . $BR


 $BR

$PAR
EOT

ANS( num_cmp( $volume, reltol=>.1 ) );
ANS( num_cmp( $area, reltol=>.1 ) );


#########################################################>>>
ENDDOCUMENT();
 
