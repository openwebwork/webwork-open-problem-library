##DESCRIPTION
## Compute matrix exponential for a matrix depending on t
##ENDDESCRIPTION


## DBsubject(Differential equations)
## DBchapter(Systems of differential equations)
## DBsection(Matrix exponential)
## Author(Jiri Lebl)
## Institution(Oklahoma State University)
## MLT(ComputeMatrixExponential2x2)
## Level(4)
## TitleText1('Notes on Diffy Qs: Differential Equations for Engineers')
## AuthorText1('Jiri Lebl')
## EditionText1('5')
## Section1('3.8')
## Problem1('')
## MO(1)
## KEYWORDS('matrix exponential')

########################################################################

###########################
# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"MatrixCheckers.pl",
"PGcourse.pl",
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
# Setup

Context("Matrix");

Context()->variables->add(t=>"Real");

# define A
$a11 = random(-1,1,2);
$a12 = non_zero_random(-3,3,1);
$mult = non_zero_random(-2,2,1);
$a21 = $mult * $a11;
$b1 = random(-1,1,2);
$a22 = $mult * $a12 + $b1;

$a = Matrix([[$a11, $a12], [$a21, $a22]]);

# B = A^-1
$b = $a->inverse();
$b11 = $b->element(1,1);
$b21 = $b->element(2,1);
$b12 = $b->element(1,2);
$b22 = $b->element(2,2);

# define eigenvalues
$e1= non_zero_random(-3,3,1);
do { $e2= non_zero_random(-3,3,1); } while ($e1==$e2);
$e = Matrix([[$e1, 0],[0, $e2]]);

# matrix = A E A^-1
$matrix = $a * $e *$b;

$matrix_exp = Compute("[[$a12*$b21*e^($e2*t)+$a11*$b11*e^($e1*t),$a12*$b22*e^($e2*t)+$a11*$b12*e^($e1*t)],[$a22*$b21*e^($e2*t)+$a21*$b11*e^($e1*t),$a22*$b22*e^($e2*t)+$a21*$b12*e^($e1*t)]]");

###########################
# Main text

Context()->texStrings;
BEGIN_TEXT
Compute the matrix exponential
\( e^{tA} \) for the matrix \( A = $matrix \).
Note the \(t\)!
$BR
$BR
\( e^{tA} = {} \)
\{
$matrix_exp->ans_array(5);
\}
END_TEXT
Context()->normalStrings;

###########################
# Answer evaluation

ANS($matrix_exp->cmp);

COMMENT("Matrix exponential, 2 distinct real eigenvalues, depending on t");

ENDDOCUMENT();
