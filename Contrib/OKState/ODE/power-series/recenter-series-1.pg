##DESCRIPTION
## Write a polynomial as a series around another point than 0
##ENDDESCRIPTION

## DBsubject(Calculus - single variable)
## DBchapter(Infinite sequences and series)
## DBsection(Power series)
## Author(Jiri Lebl)
## Institution(Oklahoma State University)
## Level(3)
## TitleText1('Notes on Diffy Qs: Differential Equations for Engineers')
## AuthorText1('Jiri Lebl')
## EditionText1('5')
## Section1('7.2')
## Problem1('')
## MO(1)
## KEYWORDS('power series', 'polynomial')

#################################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGML.pl",
  "PGcourse.pl"
);

#################################################

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric");

do {
  $a0 = non_zero_random(-4,4,1);
  $a1 = non_zero_random(1,5,1);
  $a2 = non_zero_random(2,5,1);

  $x0 = non_zero_random(-5,5,1);

  $c0 = $a2*$x0*$x0-$a1*$x0+$a0;
  $c1 = $a1-2*$a2*$x0;
  $c2 = $a2;
} while (($c0 == 1) or ($c0 == 0) or ($c0 == -1) or ($c1 == 1) or ($c1 == 0) or ($c1 == -1));

#################################################

BEGIN_PGML
Expand [:f(x) = [$c2] x^2 + [$c1] x + [$c0] :] as a power series around [: [$x0] :].

[`f(x) = `]
[___________]{"$a2"}{15}
[` {(x-[$x0])}^2 + `]
[___________]{"$a1"}{15}
[` (x-[$x0]) + `]
[___________]{"$a0"}{15}
[`\quad`] [@ AnswerFormatHelp("numbers") @]*
END_PGML

#################################################

ENDDOCUMENT();
