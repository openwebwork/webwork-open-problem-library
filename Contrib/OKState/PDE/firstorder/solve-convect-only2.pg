########################################################################

###########################
##  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",

"PGcourse.pl",
);

TEXT(beginproblem());


###########################
#  Setup

Context("Numeric");

$a = random(2,9,1);
do { $b = random(2,9,1); } until ($b != $a);
do { $c = random(2,9,1); } until (($c != $a) and ($c != $b));

Context()->variables->add(t => ["Real", limits=>[0.1,4]]);
Context()->variables->add(t0 => ["Real", TeX=>"t_0"]);

$answer1 = Compute("$c sin($a(x+$b*t0))")->reduce;

############################
##  Main text
#

Context()->texStrings;
BEGIN_TEXT
Given the PDE
$BR
\( u_t = - $b u_x , \qquad -\infty < x < \infty , \quad t > 0 \)
$BR
$BR
And suppose you know that for some fixed time \( t= t_0 \)
$BR
 \( u(x,t_0) = $c\sin($a x) \)
$BR
$BR
Then (write "t0" for \(t_0\))
$BR
\(u(x,0) = {} \) \{ ans_rule(40) \}
$BR
$BR
\{ helpLink("formulas") \}
END_TEXT
Context()->normalStrings;


#############################
##  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer1->cmp() );


#####################
# Solution

Context()->texStrings;
BEGIN_SOLUTION
${PAR}SOLUTION:$PAR
$BR
\( u(x,0) = $answer1 \)
END_SOLUTION
Context()->normalStrings;

;

ENDDOCUMENT();
