DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"parserFormulaUpToConstant.pl",
);

TEXT(beginproblem());

Context("Vector");
Context()->variables->add(t=>'Real');

$a = random(1000,2000,50);
$b = random(0.1,0.9, 0.01);

$upper = random(1,10,1);
$lower = 0;

$fx = Compute("$a*$b^t")->reduce;
$Fx = Compute("($a*$b^t)/(ln($b))")->reduce;

$fupper = $Fx->eval(t=>$upper);
$flower = $Fx ->eval(t=>$lower);

$answer = Compute("$fupper-$flower");


Context()->texStrings;
BEGIN_TEXT

An investment provides an income stream of \($fx\) dollars per year. How much is received in the first 10 years?
$BR
\{ans_rule(5)\} dollars

END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp()); 



Context()->texStrings;
BEGIN_SOLUTION
${PAR}SOLUTION:${PAR}

\(\int_{$lower}^{$upper}$fx dt=F($upper)-F($lower)=$fupper-$flower=$answer\)

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version.');

ENDDOCUMENT(); 
