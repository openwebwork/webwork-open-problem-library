DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"parserFormulaUpToConstant.pl",
);

TEXT(beginproblem());

Context("Vector");

$a = random(1,10,1);

$upper = random(90,100,1);
$lower = random(1,4,1);


$fx = Compute("(1/$a)^x")->reduce;
$Fx = Compute("-1/($a^x*ln($a))")->reduce;

$fupper = $Fx->eval(x=>$upper);
$flower = $Fx ->eval(x=>$lower);

$answer = Compute("$fupper-$flower");


Context()->texStrings;
BEGIN_TEXT

Evaluate the definite integral by first finding an antiderivative \(\int_{$lower}^{$upper}$fx dx\)\{ans_rule()\}

END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS( $answer->cmp()); 



Context()->texStrings;
BEGIN_SOLUTION
${PAR}SOLUTION:${PAR}

\(\int_{$lower}^{$upper}$fx dx=F($upper)-F($lower)=$fupper-$flower=$answer\)

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version.');

ENDDOCUMENT();