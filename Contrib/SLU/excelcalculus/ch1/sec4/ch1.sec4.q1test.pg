DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"PGchoicemacros.pl",
"PGgraphmacros.pl",
);

TEXT(beginproblem());

Context("Vector");

##$a = random(-10,-3,1);
$a = 100;

$label1 = random(7,17,1);
$label2 = Compute("$label1+1");
$label3 = Compute("$label1+2");

$a1 = Compute("$label1-12");
$a2 = Compute("$label2-12");
$a3 = Compute("$label3-12");

$b1 = Compute("$a1^2+$a*$a1");
$b2 = Compute("$a2^2+$a*$a2");
$b3 = Compute("$a3^2+$a*$a3");

$mc = new_checkbox_multiple_choice();

$mc -> qa (
"Choose the graph below that looks the closest to the one you created.", 
"1 $BR",               
);

$mc -> extra(
"2 $BR","3 $BR","4 $BR"
);

$gr3 = init_graph(-1,-1,4,4,axes=>[0,0],grid=>[5,5]);
  $gr2 = init_graph(-1,-1,4,4,axes=>[0,0],size=>[150,150]);

  $gr2->lb('reset');

  add_functions($gr3,
  "x^3 for x in <-1,4> using color:black and weight:2");

  add_functions($gr2,
  "2*x for x in <-1,4> using color:green and weight:2",
  "-x for x in <-1,4> using color:red and weight:2");

$gr1 = init_graph(-1,-1,4,4,axes=>[0,0],grid=>[5,5]);

 add_functions($gr1,
  "x^3 for x in <-1,4> using color:black and weight:2");


Context()->texStrings;
BEGIN_TEXT

Create a worksheet with a graph of the function \(f(x)=x^2+$a*x\), with \(x\) going from -10 to 10 by 1. 
$BR
\{ image( insertGraph($gr1), 
width=>200,height=>200,tex_size=>800 ) \}

$BR
Fill in the table below with the data you created.
\{ 
begintable(3) .
row( " ", "X","f(x)=x^2+$a*x" ) .
row("$label1", "$a1" , ans_rule()) .
row("$label2", "$a2" , ans_rule()) .
row("$label3", "$a3" , ans_rule()) .
endtable(); 
\}
$BR
$BR
\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}

END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;


ANS( $b1->cmp()); 
ANS( $b2->cmp()); 
ANS( $b3->cmp()); 

ANS( checkbox_cmp( $mc->correct_ans() ) );


Context()->texStrings;
