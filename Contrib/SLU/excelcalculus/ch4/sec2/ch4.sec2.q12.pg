DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl"
);

TEXT(beginproblem());

Context("Numeric");

$a = non_zero_random(-10,10,1);
$b = non_zero_random(-10,10,1);

$formula = Compute("(x^2+$a*x+$b)/(e^x)")->reduce;

$deriv = $formula->D(x);


Context()->texStrings;
BEGIN_TEXT

Use the rules from the last two sections to find the derivative of the function, \(n(x)=$formula\)
$BR
\(n'(x)=\) \{ ans_rule(40) \} 

END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;


ANS( $deriv->cmp());


Context()->texStrings;
BEGIN_SOLUTION
${PAR}SOLUTION:${PAR}

\(n'(x)=$deriv\)

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version.');

ENDDOCUMENT();         