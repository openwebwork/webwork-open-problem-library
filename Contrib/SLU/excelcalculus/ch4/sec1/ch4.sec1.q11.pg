DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl"
);

TEXT(beginproblem());

Context("Numeric");

$a = random(1,10,0.01);

$formula = Compute("$a^x")->reduce;

$deriv = $formula->D;


Context()->texStrings;
BEGIN_TEXT

Use the symbolic rules to find the derivative of the function, \(m(x)=$a^x\)
$BR
\(m'(x)=\) \{ ans_rule() \} 

END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;


ANS( $deriv->cmp());


Context()->texStrings;
BEGIN_SOLUTION
${PAR}SOLUTION:${PAR}

\(m'(x)=ln($a)*$a^x\)

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version.');

ENDDOCUMENT();  
