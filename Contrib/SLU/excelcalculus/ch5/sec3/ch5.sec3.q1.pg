DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"parserPopUp.pl",
);

TEXT(beginproblem());

Context("Numeric");
Context()->variables->add(q=>'Real');


$a = random(10,50,5);
$b = random(10,70,5);

$q = random(100,400,10);

$formula = Compute("$a-(q)/($b)")->reduce;

$ansa = $formula->eval(q=>$q);

$ansb = Compute("((-1)/(-1/$b))*(($ansa*$b)/($q))");

if ($ansb>1) {
$popup1 = PopUp (
   ["?", "Raise","Lower","Hold Steady"],
"Lower",
); 
}
if ($ansb<1) {
$popup1 = PopUp (
   ["?", "Raise","Lower","Hold Steady"],
"Raise",
); 
}
if ($ansb==1) {
$popup1 = PopUp (
   ["?", "Raise","Lower","Hold Steady"],
"Hold Steady",
); 
}

$ansd2 = Compute("($b*$a)/2");

$ansd1 = $formula->eval(q=>$ansd2);



$ans= Compute("1");

Context()->texStrings;
BEGIN_TEXT

For the given demand-price function and quantity:
$BR
$BR
\(price=$a-\frac{quantity}{$b}\); \(quantity=$q\)
$BR
$BR
a. Find the price associated with the given quantity: \{ ans_rule(20) \}
$BR
$BR
b. Find the elasticity for the given quantity: \{ ans_rule(20) \}
$BR
$BR
c. State which pricing strategy increases revenue: \{ $popup1->menu() \}
$BR
$BR
d. Find the price and quantity that maximizes profit:
$BR
\(price=\)\{ ans_rule(20) \}
$BR
\(quantity=\)\{ans_rule(20) \}


END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;


ANS( $ansa->cmp());
ANS( $ansb->cmp());
ANS( $popup1->cmp());
ANS( $ansd1->cmp());
ANS( $ansd2->cmp());



Context()->texStrings;
BEGIN_SOLUTION
${PAR}SOLUTION:${PAR}

NO SOLUTION

END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version.');

ENDDOCUMENT();
