# DESCRIPTION
# AP Question for Limits
# ENDDESCRIPTION

## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Derivative Rules")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"If \( y=2\cos{\frac{x}{2}} \), then \( \frac{d^{2}y}{dx^{2}} \)=",
	"\( -\sin{x}{2} \)"

);

$radio -> extra(

	"\( -8\cos{x}{2} \)",
	"\( -2\cos{x}{2} \)",
	"\( -\cos{x}{2} \)",
	"\( -\frac{1}{2}\cos{x}{2} \)"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
