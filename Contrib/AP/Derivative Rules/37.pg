);

$radio -> extra(

	"\( \frac{1}{6} \)",
	"\( \frac{1}{2} \)",
	"\( 2 \)",
	"\( 6 \)"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

