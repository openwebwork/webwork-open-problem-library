# DESCRIPTION
# AP Question for Limits
# ENDDESCRIPTION

## DBsubject("Calculus")
## DBchapter("Limits")
## DBsection("Limits")
## KEYWORDS("limits")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"If a \( \neq \) 0, then \( \lim_{x\toa}{\frac{x^{2}-a^{2}}{x^{4}-a^{4}}} \) is",
	"\( \frac{1}{2a^{2}} \)"

);

$radio -> extra(

	"\( \frac{1}{a^{2}} \)",
	"\( \frac{1}{6a^{2}} \)",
	"\( 0 \)"

);

$radio -> makeLast(

	"nonexistent"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
