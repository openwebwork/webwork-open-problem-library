# DESCRIPTION
# AP Question for Limits
# ENDDESCRIPTION

## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Definition of a Derivative")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"If \( f(x) \) is a function such that \( \lim_{x\to2}{\frac{f(x)-f(2)}{x-2}}=0 \)",
	"The derivative of \( f \) at \( x=2 \) is 0"

);

$radio -> extra(

	"The limit of \( f(x) \) as \( x \) approaches 2 does not exist",
	"\( f \) is not defined at \( x=2 \)",
	"\( f(2)=0 \)",
	"\( f \) is continuous at \( x=0 \)"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
