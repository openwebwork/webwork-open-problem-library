	"What is \( \lim_{h\to0}{\frac{8(\frac{1}{2}+h)^{8}-8\frac{1}{2}^{8}}{h}} \)?",
	"\( \frac{1}{2} \)"

);

$radio -> extra(

	"\( 0 \)",
	"\( 1 \)"

);

$radio -> makeLast(

	"nonexistent",
	"It cannot be determined from the information given"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() - >normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

