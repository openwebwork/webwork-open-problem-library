# DESCRIPTION
# AP Question for Limits
# ENDDESCRIPTION

## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Definition of a Derivative")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"If \( f(x)=e^{x} \), which of the following is equal to \( f'(x) \)?",
	"\( \lim_{h\to0}{\frac{e^{e+h}-e^{e}}{h}} \)"

);

$radio -> extra(

	"\( \lim_{h\to0}{\frac{e^{x+h}}{h}} \)",
	"\( \lim_{h\to0}{\frac{e^{x+h}-e^{e}}{h}} \)",
	"\( \lim_{h\to0}{\frac{e^{x+h}-1}{h}} \)",
	"\( \lim_{h\to0}{\frac{e^{e+h}-e}{h}} \)"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
