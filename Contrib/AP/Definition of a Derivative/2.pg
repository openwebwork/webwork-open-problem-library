# DESCRIPTION
# AP Question for Limits
# ENDDESCRIPTION

## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Definition of a Derivative")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"The \( \lim_{h\to0}{\frac{\tan{3(x+h)}-\tan{3x}}{h}} \) is",
	"\( 3\sec^2{3x} \)"

);

$radio -> extra(

	"\( 0 \)",
	"\( \sec^2{3x} \)",
	"\( 3\cot{3x} \)"

);

$radio -> makeLast(

	"nonexistent"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
