## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Definition of a Derivative")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"\( \lim_{h\to0}{\frac{\sin{x+h}-\sin{x}}{h}} \) is",
	"\( \cos{x} \)"

);

$radio -> extra(

	"\( 0 \)",
	"\( 1 \)",
	"\( \sin{x} \)"

);

$radio -> makeLast(

	"nonexistent"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() - >normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
