# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"\( \lim_{h\to0}{\frac{e^{h}-1}{2h}} \) is",
	"\( \frac{1}{2} \)"

);

$radio -> extra(

	"\( 0 \)",
	"\( 1 \)",
	"\( e \)"

);

$radio -> makeLast(

	"nonexistent"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
