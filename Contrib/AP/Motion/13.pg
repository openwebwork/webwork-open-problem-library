# DESCRIPTION
# AP Question for Limits
# ENDDESCRIPTION

## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Motion")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"If the velocity of a particle moving along the x-axis is \( v(t)=2t-4 \) and if at \( t=0 \) its position is 4, then at any time \( t \) its position \( x(t) \) is",
	"\( t^{2}-4t+4 \)"

);

$radio -> extra(

	"\( t^{2}-4t \)",
	"\( t^{2}-4t-4 \)",
	"\( 2t^{2}}-4t \)",
	"\( 2t^{2}-4t+4 \)"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
