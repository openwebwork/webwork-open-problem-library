## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Motion")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"The position of a particle moving along a strait line at any time \( t \) is given by \( s(t)=t^{2}+4t+4 \). What is the acceleration of the particle when \( t=4 \)?",
	"\( 2 \)"

);

$radio -> extra(

	"\( 0 \)",
	"\( 4 \)",
	"\( 8 \)",
	"\( 12 \)"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
