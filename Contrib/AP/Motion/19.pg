# DESCRIPTION
# AP Question for Limits
# ENDDESCRIPTION

## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Motion")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"At time \( t \geq 0 \), the acceleration of a particle moving on the x-axis is \( a(t)=t+\sin{t} \). At \( t=0 \), the velocity of the particle is -2. For what value \( t \) will the velocity of the particle be zero?",
	"\( 2.81 \)"

);

$radio -> extra(

	"\( 1.02 \)",
	"\( 1.48 \)",
	"\( 1.85 \)",
	"\( 3.14 \)"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
