# DESCRIPTION
# AP Question for Limits
# ENDDESCRIPTION

## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Motion")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"A particle moves along the x-axis so that at any time \( t \) its position is given by \( x(t)=te^{-2t} \). For what values of \( t \) is the particle at rest?",
	"\( \frac{1}{2} \) only"

);

$radio -> extra(

	"\( 0 \) only",
	"\( 1 \) only",
	"\( 0 \) and \( \frac{1}{2} \)"

);

$radio -> makeLast(

	"No values"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
