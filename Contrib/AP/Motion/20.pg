# DESCRIPTION
# AP Question for Limits
# ENDDESCRIPTION

## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Motion")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"A particle moves along the x-axis so that at any time \( t \geq 0 \) the acceleration of the particle is \( a(t)=e^{-2t} \). If at \( t=0 \) the velocity of the particle is \( \frac{5}{2} \) and its position is \( \frac{17}{4} \), then its position at any time \( t>0 \) is \( x(t)= \)",
	"\( \frac{e^{-2t}}{4}+3t+4 \)"

);

$radio -> extra(

	"\( -\frac{e^{-2t}}{2}+3 \)",
	"\( \frac{e^{-2t}{4}}+4 \)",
	"\( 4e^{-2t}+\frac{9}{2}t+\frac{1}{4} \)",
	"\( \frac{e^{-2t}}{2}+3t+\frac{15}{4} \)"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
