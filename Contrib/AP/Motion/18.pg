# DESCRIPTION
# AP Question for Limits
# ENDDESCRIPTION

## DBsubject("Calculus")
## DBchapter("Derivatives")
## DBsection("Motion")
## KEYWORDS("derivative")

# Init

DOCUMENT();

loadMacros(

	"PGstandard.pl",
	"MathObjects.pl",
	"PGchoicemacros.pl"

);

# Setup

Context("Numeric");

$radio = new_multiple_choice();

$radio -> qa(

	"A particle moves along the x-axis so that its acceleration at any time \( t \) is \( a(t)=2t-7 \). If the initial velocity of the particle is 6, at what time \( t \) during the interval \( 0 \leq t \leq 4 \) is the particle farthest to the right?",
	"\( 1 \)"

);

$radio -> extra(

	"\( 0 \)",
	"\( 2 \)",
	"\( 3 \)",
	"\( 4 \)"

);

# Main Text

TEXT(beginproblem());
Context() -> texStrings;

BEGIN_TEXT

\{ $radio -> print_q() \}
\{ $radio -> print_a() \}

END_TEXT

Context() -> normalStrings;

# Answer

ANS(radio_cmp($radio -> correct_ans()));

ENDDOCUMENT();
