DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.

rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real',t=>'Real');
$a=random(1,4,1);
$b=random(2,4,1);
$u=Formula("$a*x^($b)")->reduce;
$fu=Formula("sec(u)^2")->reduce;
$g=Formula("x^($b-1)")->reduce;
$f=$fu->substitute(u=>$u);
$df=Formula("$g*$f")->reduce;
$Fu=Formula("tan(u)")->reduce;
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$c=Compute("1/($b*$a)");
Context("Numeric");

$ans=Compute("$c*$F");
if($c==1){$c=""}
if($c==-1){$c="-"}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral by any method.
$PAR
\( \displaystyle \int  $df \;dx\) \(=\) \{ans_rule(20) \} \(+C\)
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($c du = $g dx\) hence;
$PAR
\[ \displaystyle \int $df \;dx = $c \int $fu \;du=$c$Fu+C=$c $F+C\]
$BR
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
