DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl",   "littleneck.pl"          
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup


$a=random(2,4,1);
$b=random(2,5,1);

$c=random(1,22,1);
if($c==0){}
else {$f3="+ $c"}
if(random(1,2,15)==1){$dr=1}
else{$d=random(1,25,1);$dr=$d;
}
$a2=2*$a;
$a3=3*$a2;
$a4=4*$a3;
$b3=2*$b;
$b4=3*$b3;
$f1="$a x^{-2} ";
$f2="+$b x^{-1} ";
$f4="+$d x";
$df1="-$a2 x^{-3}";
$df2="-$b x^{-2} ";
$ddf1="$a3 x^{-4}";
$ddf2="+$b3 x^{-3} ";
$tdf1="-$a4 x^{-5}";
$tdf2="-$b4 x^{-4} ";

$ans=Compute("-$a4*x**(-5)-$b4*x**(-4)");

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
For \( y = $f1 $f2 $f3 $f4 \), find \( y''' \).
$PAR
\( y'''  =\) \{ans_rule(20) \}
END_TEXT

###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ y'= \frac{dy}{dx}=\frac{d}{dx} ($f1 $f2 $f3 $f4) =$df1 $df2 +$dr\]
$BR
\[y''=\frac{d^2 y}{dx^2}=\frac{d}{dx}(y')=\frac{d}{dx} ($df1 $df2 +$dr)=$ddf1 $ddf2 \]
$BR

\[y'''=\frac{d^3 y}{dx^3}=\frac{d}{dx}(y'')=\frac{d}{dx} ($ddf1 $ddf2 )=$tdf1 $tdf2 \]

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
