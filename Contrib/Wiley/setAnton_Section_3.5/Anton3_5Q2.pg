DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.

rand_button();

TEXT(beginproblem());

###################################
# Setup
#Context("Fraction");
Context()->variables->are(x0=>'Real',x=>'Real'); 
$a=random(-8,8,1);
if($a==0){$a=9}
$b=random(1,6,1);
$x0=random(-5,5,1);
if($x0==0){$x0=6}
$c=Formula("-$a*$b")->eval;
$f=Formula("$a/x**($b)")->reduce;
$fx0=$f->substitute(x=>x0)->reduce;
$df=Formula("$c/x**($b+1)")->reduce;
$dfx0=$df->substitute(x=>x0)->reduce;
$y1=Formula("$fx0+$dfx0*(x-x0)")->reduce;
$alt=$a-$c;
$y2=Formula("$alt/x0+$dfx0*x")->reduce;
$A=$a*(1+$b);
$B=$x0**$b;
$C=$A/$B;
$d=$B*$x0;
$e=$c/$d;
if($C==int($C)){
  if($e==int($e)){
    $ans=Formula("$C+$e*x")->reduce;
  }
  else{
    ($cr,$dr)=reduce($c,$d);
    $e="\frac{$cr}{$dr}";
    $ans=Compute("$C+($cr/$dr)*x");
  }
}
else{
  ($Ar,$Br)=reduce($A,$B);
  $C="\frac{$Ar}{$Br}";
  if($e==int($e)){
    $ans=Compute("$Ar/$Br+$e*x");
  }
  else{
    ($cr,$dr)=reduce($c,$d);
    $C="\frac{$Ar}{$Br}";
    $ans=Compute("$Ar/$Br+($cr/$dr)*x"); 
    $e="\frac{$cr}{$dr}";   
  }
}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Use the formula \[f(x)\approx f(x_0)+f'(x_0)(x-x_0)\] to obtain the local linear approximation \((\small{y})\) of \(\small{$f}\) at \(\small{x_0=$x0}\).
$PAR
\( y  \approx\) \{ans_rule(20) \}
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
Let \(f(x)=$f\). Then
\[f'(x)=$df\]
and \[y=f(x)\approx f(x_0)+f'(x_0)(x-x_0)=$y1=$y2\].
With \(x_0=$x0\) \[y=$C+$e x\].

END_SOLUTION
Context()->normalStrings;

