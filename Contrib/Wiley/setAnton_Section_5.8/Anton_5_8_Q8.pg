DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
# 
Context()->variables->add(t=>'Real');

Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$a=non_zero_random(-8,-1,1);
$ap=-$a;
$br=random(2,10,1);
$b="\ln{$br}";
$c="\frac{1){\ln{$br}+$ap}";
$A=random(2,10,1);
$C="\frac{$A}{\ln{$br}+$ap}";
$f1=Formula("e**(x)");
$f=$A*$f1;
$F=$f1;
$Fa=$F->substitute(x=>$a);
$Fb=Formula("$br");
$ans=Compute("(($A)/(ln($br)+$ap))*($Fb-$Fa)");

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the average value of the function \(f(x)=$f\) on the interval \([$a,$b]\).
$PAR
\( f_{\mathrm{ave}}\) \(=\) \{ans_rule(40) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
$PAR

\[ \displaystyle f_{\mathrm{ave}}=\frac{$A}{$b-$a} \int^{$b}_{$a} $f1 \;dx = $C \left[$F\right]^{$b}_{$a}=$C($Fb-$Fa) \]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();