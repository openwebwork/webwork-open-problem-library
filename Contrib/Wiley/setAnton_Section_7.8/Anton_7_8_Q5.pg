DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.

rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real',a=>'Real');
$c=random(1,4,1);
$b=random(1,8,1);
$a=random($c+1,8,1);
($N,$D)=reduce($b,2*$c);
$g=Formula("$b/(x^2-$c**2)")->reduce;

$G=Formula("$N*ln|(x+$c)/(x-$c)|/$D")->reduce;
$Ga=$G->substitute(x=>'a');
$n1=($c+$a);
$d1=abs($c-$a);
($n,$d)=reduce($n1,$d1);
Context("Fraction");
Context()->variables->add(u=>'Real',a=>'Real');
$A=Compute("$N/$D");
$av=Compute("abs(($c+$a)/($c-$a))");
$av2=Compute("1/$av");
Context("Numeric");
Context()->variables->add(u=>'Real',a=>'Real');

$ans=Compute("$A*ln($av)");

if($n==1){
if($A==1){
$ansd="-\ln {$d}";}
else{
$ansd="-\frac{$N}{$D}\ln {$d}";}}
else{

if($d==1){
if($A==1){

$ansd="\ln{$n}"}
else{
if($D==1){$ansd="$N\ln{$n}";
}
else{
$ansd="\frac{$N}{$D}\ln{$n}"}}}
else{
if($A==1){

$ansd="\ln\left($av\right)"}
else{
if($D==1){$ansd="$N\ln(\frac{$n}{$d})";
}
else{
$ansd="\frac{$N}{$D}\ln\left(\frac{$n}{$d}\right)"}}}}
if($A==1){$A=""}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integrals that converge, enter 'DNC' if integral Does Not Converge.
$PAR
\( \displaystyle  \int_{$a}^{+\infty} $g \;dx\) \(=\) \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Using Endpaper Integral Table entry 69.
\[ \displaystyle\int_{$a}^{+\infty}  $g \;dx=\lim_{a\to +\infty}\int_{$a}^{a}  $g \;dx=\lim_{a\to +\infty} \left[-$G\right]_{$a}^{a}=\lim_{a\to +\infty}\left[-$Ga+$A\ln($av)\right]=$ansd\]

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
