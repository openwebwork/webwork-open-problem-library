DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.

rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real',a=>'Real');
$a=0;
$b=random(1,8,1);
$c=random(1,3,1);
$B=$c**3;
($N,$D)=reduce(3*$b,2);
$g="\frac{$b}{\sqrt[3]{x}}";

$G="\sqrt[3]{x^2}";
$Ga="\sqrt[3]{a^2}";
Context("Fraction");
Context()->variables->add(u=>'Real',a=>'Real');
$C2=Compute("($c)^2");
$ans=Compute("$N*$C2/$D");
$A=Compute("$N/$D");
Context("Numeric");
Context()->variables->add(u=>'Real',a=>'Real');


###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integrals that converge, enter 'DNC' if integral Does Not Converge.
$PAR
\( \displaystyle  \int_{$a}^{$B} $g \;dx\) \(=\) \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ \displaystyle\int_{$a}^{$B}  $g \;dx=\lim_{a\to 0^{+}}\int_{a}^{$B}  $g \;dx=\lim_{a\to 0^{+}} \left[$A$G\right]_{a}^{$B}=$A\lim_{a\to 0^{+}}\left[$C2-$Ga\right]=$ans\]

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
