DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
##
##
$f1a= Formula("cot(x)");
$f1b= Formula("tan(x)");
$ddfa=Formula("2*csc^2(x)*cot(x)");
$ddfb=Formula("2*sec^2(x)*tan(x)");
if(random(0,1,1)==0){$f=$f1a;$ans=$ddfa}
else{$f=$f1b;$ans=$ddfb}
$df1=$f->D->reduce;
$ddf=$df1->D->reduce;
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find \(\frac{d^2y}{dx^2}\) for \[y=$f\]
$PAR 
\(\frac{d^2y}{dx^2} =\) \{ans_rule(40) \}
END_TEXT
###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[y'(x)=\frac{dy}{dx}=\frac{d}{dx}[$f]=$df1\]
\[y''(x)=\frac{d^2y}{dx^2}=\frac{d}{dx}[y'(x)]=\frac{d}{dx}[$df1]=$ddf\]
\[\frac{d^2y}{dx^2}=$ans\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
