DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup


$a=random(-20,20,1);
if($a==0){$a=30}
$b=2*$a;
 
$f=Formula("$a*(sin(x))**2")->reduce;
$g1=Formula("$a*sin(x)")->reduce;
$g2=Formula("sin(x)")->reduce;
$df1=$f->D;
$df2=Formula("$b*sin(x)*cos(x)")->reduce;
$df3=Formula("$a*sin(2*x)")->reduce;
$ans=$df2;
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find \(f'(x)\) for \[f(x)=$f\]
$PAR 
\(f'(x)  =\) \{ans_rule(20) \}
END_TEXT
###################################
# Answers

$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[f'(x)=\frac{d}{dx}($f)=2\cdot$g1 \cdot \frac{d}{dx}($g2)=$df1=$df2\]
Note also that \[f'(x)=$df3\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
