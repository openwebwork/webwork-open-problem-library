DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl", "contextFraction.pl" ,"littleneck.pl"        
);
# allow the student to change the seed for this problem.

rand_button();
TEXT(beginproblem());


###################################
# Setup
Context()->variables->add(y=>'Real');
$index1=random(0,1,1);
$index2=random(0,1,1);
$y=random(-9,9,1);
if($y==0){$y=10}
if($index2==0){
    $sign="+"; 
}
else{
  $sign="-";
}
if($index1==0){
  $nf=Formula("y+$y")->reduce;
  $df=Formula("y**(2)-($y)**2")->reduce;
  $dfr=Formula("y-$y")->reduce;
  $nfv=$nf->eval(y=>$y);
  $Nfv=abs($nfv);
  $nfs=$nfv/$Nfv;
 if($index2==0){
    $ans=Compute("inf");
    $and="\lim_{y\to $y^{$sign}}\frac{1}{$dfr}=+\infty";
  }
 else{
  $ans=Compute("-inf");
  $and="\lim_{y\to $y^{$sign}}\frac{1}{$dfr}=-\infty";
 }
}
else{
  $nf=Formula("y-$y")->reduce;
  $df=Formula("y**(2)+(($y)**2)")->reduce;
  $dfv=$df->eval(y=>$y);
  $ans=Compute("0");$and="\frac{0}{$dfv}=0";
}




$f=$nf/$df;



###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
$PAR
Notes: Enter "DNE" if limit Does Not Exist.$PAR
\(\displaystyle \lim_{y\to $y^{$sign}} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\(\displaystyle \lim_{y\to $y^{$sign}}  $f=$and\)
END_SOLUTION
Context()->normalStrings;

