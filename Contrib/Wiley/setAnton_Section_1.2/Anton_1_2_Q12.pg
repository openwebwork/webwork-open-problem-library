DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.
rand_button();
TEXT(beginproblem());

###################################
# Setup  
$a=non_zero_random(-6,6,1);
$b=random(-5,-1,1)*abs($a)/$a;
$c=random(-5,-1,1)*abs($a)/$a;
$B=random(3,4,1);
$C=$B-1;
if($b==$c){$c=$b+non_zero_random(-2,2,1)}
$x=$a;
$Bb=$b+$a*$B;
$Ba=$a*$b;
$Cc=$c+$a*$C;
$Ca=$a*$c;
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$f1=Formula("$B*x**2-$Bb*x+$Ba")->reduce;
$F1=Formula("($B*x-$b)*(x-$a)")->reduce;
$G1=Formula("($B*x-$b)")->reduce;
$f2=Formula("$C*x**2-$Cc*x+$Ca")->reduce;
$F2=Formula("($C*x-$c)*(x-$a)")->reduce;
$G2=Formula("($C*x-$c)")->reduce;
$f=$f1/$f2;
$F=$F1/$F2;
$G=$G1/$G2;

$n=$G1->eval(x=>$x);
$d=$G2->eval(x=>$x);
$frac1="\frac{$n}{$d}";
($N,$D)=reduce($n,$d);
$ans=Compute("$N/$D");
if($N==$n){
 if($D==1){$frac2="=$N"}
 else{$frac2=""}
}
else{$frac2="=\frac{$N}{$D}"}






###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
$PAR
Notes: Enter "DNE" if limit Does Not Exist.$PAR
\(\displaystyle \lim_{x\to $x} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[\displaystyle \lim_{x\to $x} $f=\lim_{x\to $x} $F=\lim_{x\to $x} $G=$frac1$frac2\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
