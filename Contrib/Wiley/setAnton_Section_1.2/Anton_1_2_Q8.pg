DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.
rand_button();
TEXT(beginproblem());

###################################
# Setup  
$a=non_zero_random(-6,6,1);
Context()->variables->add(t=>'Real');
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$f1=Formula("t**3-($a)**3")->reduce;
$F1=Formula("(t-$a)*(t**2+$a*t+($a)**2)")->reduce;
$G=Formula("t**2+$a*t+($a)**2")->reduce;
$f2=Formula("(t-$a)")->reduce;
$F2=Formula("(t-$a)")->reduce;
$f=$f1/$f2;
$F=$F1/$F2;

$ans=Compute("3*($a)**2");


$ans=Compute("$ans");

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
$PAR
Notes: Enter "DNE" if limit Does Not Exist.$PAR
\(\displaystyle \lim_{t\to $a} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[\displaystyle \lim_{t\to $a} $f=\lim_{t\to $a} $F=\lim_{t\to $a} \left[$G\right]=$ans\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT(); 
