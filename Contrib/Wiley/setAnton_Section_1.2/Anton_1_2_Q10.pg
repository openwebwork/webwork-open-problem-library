DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.
rand_button();
TEXT(beginproblem());

###################################
# Setup  
$a=non_zero_random(-6,6,1);
$A=non_zero_random(-8,8,1);
if($a==$A){$A=$a+non_zero_random(-3,3,1)}
$b=-$a-$A;
$c=$a*$A;
$B=-2*$a;
$C=$a**2;
if($x==$A){$x=$A+non_zero_random(-2,2,1)}
$x=$a;
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$f1=Formula("x**2+$B*x+$C")->reduce;
$F1=Formula("(x-$a)**2")->reduce;
$G1=Formula("(x-$a)")->reduce;
$f2=Formula("x**2+$b*x+$c")->reduce;
$F2=Formula("(x-$a)*(x-$A)")->reduce;
$G2=Formula("(x-$A)")->reduce;
$f=$f1/$f2;
$F=$F1/$F2;
$G=$G1/$G2;

$n=$G1->eval(x=>$x);
$d=$G2->eval(x=>$x);
$frac1="\frac{$n}{$d}";
($N,$D)=reduce($n,$d);
$ans=Compute("0");
$frac2=$N;






###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
$PAR
Notes: Enter "DNE" if limit Does Not Exist.$PAR
\(\displaystyle \lim_{x\to $x} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[\displaystyle \lim_{x\to $x} $f=\lim_{x\to $x} $F=\lim_{x\to $x} $G=$frac1=$frac2\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
