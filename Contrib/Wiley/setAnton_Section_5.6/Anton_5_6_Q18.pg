DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
$r1=random(1,2,1);
$r2=random($r1+1,5,1);
$a=$r1**2;
$b=$r2**2;
$c=random(-1,1,2)*random(1,10,1);
$f=Formula("$c/(x*sqrt(x))")->reduce;
$F=Formula("(-2*$c)/sqrt(x)")->reduce;
$Fa=$F->substitute(x=>$a);
$Fb=$F->substitute(x=>$b);
Context("Fraction");
$Fa=Compute("(-2*$c)/$r1");
$Fb=Compute("(-2*$c)/$r2");
$ans=Compute("(2*$c*($r2-$r1))/($r1*$r2)");
$ans=Compute("$ans");
Context("Numeric");
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral using Part 1 of the Fundamental Theorem of Calculus.
$PAR
\( \displaystyle \int^{$b}_{$a} $f \;dx\) \(=\) \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(F(x)=$F\), observe that, \(\frac{d}{dx} \left( $F\right)= $f\).
$PAR
Hence,
\[ \displaystyle \int^{$b}_{$a} $f \;dx =  F($b)-F($a)=$Fb-$Fa=$ans \]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
