DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(t=>'Real',dt=>'Real');
$a=random(1,9,1);

if($a==4 ){$a=10}
$A=$a+1;
$b=$A**2-$a**2;
$f=Formula("sqrt(t**2+$b)");
$F=$f->substitute(t=>'x');
$G=Formula("x/$F");
$fa=Compute("0");
$Fa=Compute("$A");
Context("Fraction");
$Ga=Compute("$a/$A");
Context("Numeric");
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Let \(\displaystyle F(x)=\int^{x}_{$a} $f\;dt\). Find
$PAR
(a) \( F($a) \) \(=\) \{ans_rule(20) \} 
$PAR
(b) \( F'($a) \) \(=\) \{ans_rule(20) \} 
$PAR
(c) \( F''($a) \) \(=\) \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($fa->cmp);
ANS($Fa->cmp);
ANS($Ga->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
(a) \(F($a)=\int^{$a}_{$a} $f\;dt=0\).
$PAR
(b) \(F'(x)=\displaystyle \frac{d}{dx}\int^{x}_{$a} $f\;dt=$F\;\), \(\;F'($a)=$Fa\).

$PAR
(b) \(F''(x)= \frac{d}{dx} \left[$F\right]=$G\;\), \(\;F''($a)=$Ga\).
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
