DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl", "contextFraction.pl"   ,"littleneck.pl"       
);
# allow the student to change the seed for this problem.

rand_button();

TEXT(beginproblem());

###################################
# Setup
$index1=random(0,1,1);
$index2=random(0,1,1);
$a=random(1,9,1);
if($a==0){$a=10}
$b=random(2,9,1);
$g1=Formula("$a*sin(x)")->reduce;
$g2=Formula("x**($b)")->reduce;
$dg1=Formula("$a*cos(x)")->reduce;
$ba=$b*$a;
$dg2=Formula("$b*x**($b-1)")->reduce;
$dg2v=$ba;
if($index2==0){
    $sign="+"; $dg1v=$a;$sn=1;$et=1;
}
else{
  $sign="-";$dg1v=$a;$dg2v=-$b;$sn=-1;if($b/2==int($b/2)){$et=1}else{$et=-1}
}

@list=([$g1,$dg1,$dg1v],[$g2,$dg2,$dg2v]);


($nf,$dnf,$dnfv)=@{$list[$index1]};
($df,$ddf,$ddfv)=@{$list[abs($index1-1)]};

$f=$nf/$df;
$F=$dnf/$ddf;
if($index1==0){
$test=$b*$a*$sn*$et;
$Sig=($test <=> 0);
if($Sig==1){
$ans=Compute("+inf");
$ansd="+ \infty";
}
else{
$ans=Compute("-inf");
$ansd="- \infty";}
}
else{
$lim=$dnfv/$ddfv;

$ans=Compute("0");
$ansd=$ans;

}


###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
\(\displaystyle \lim_{x\to 0^{$sign}} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\(\displaystyle \lim_{x\to 0^{$sign}}  $f=\lim_{x\to  0^{$sign}}  $F=$ansd\)
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();