DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl", "contextFraction.pl"    ,"littleneck.pl"       
);
# allow the student to change the seed for this problem.

rand_button();
TEXT(beginproblem());

###################################
# Setup
$index1=random(0,1,1);
$b=random(1,9,1);
if($b==0){$a=10}
$a=random(1,9,1);

$g2=Formula("e**($b/x)")->reduce;
$g1=Formula("$a-ln(x**($a))")->reduce;
$dg2=Formula("(-$b/x**2)*e**($b/x)")->reduce;
$dg1=Formula("-$a/x")->reduce;
$Dg1=Formula("$a*x")->reduce;
$Dg2=Formula("$b*e**($b/x)")->reduce;

@list=([$g1,$dg1,$Dg1],[$g2,$dg2,$Dg2]);


($nf,$dnf,$Dnf)=@{$list[$index1]};
($df,$ddf,$Ddf)=@{$list[abs($index1-1)]};

$f=$nf/$df;
$F=$dnf/$ddf;
$Ff=$Dnf/$Ddf;
if($index1==1){
$Sig=($b <=> 0);
if($Sig==1){
$ans=Compute("+inf");
$ansd="+ \infty";
}
else{
$ans=Compute("-inf");
$ansd="- \infty";}
}
else{
$ans=Compute("0");
$ansd=$ans;

}


###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
\(\displaystyle \lim_{x\to 0^+} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\(\displaystyle \lim_{x\to 0^+} $f=\lim_{x\to 0^+}  $F=\lim_{x\to 0^+}$Ff=$ansd\)
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();