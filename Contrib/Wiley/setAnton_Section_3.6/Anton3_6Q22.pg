DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.

rand_button();
TEXT(beginproblem());

###################################
# Setup
$a=non_zero_random(-8,8,1);
Context("Fraction");
$ansd=Compute("-$a*2");
$ans=Compute("$ansd");


Context("Numeric");
$f=Formula("($a*x-$a*pi)tan(x/2)")->reduce;
$F=Formula("($a*x-$a*pi)/cot(x/2)")->reduce;
$g=Formula("[$a]/[-csc^2(x/2)/2]")->reduce;
$G=Formula("sin^2(x/2)")->reduce;
if(random(0,1,1)==0){$s="-"}
else{$s="+"}
if($ansd==1){$ansd=""}
if($ansd==-1){$ansd="-"}

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
\(\displaystyle \lim_{x\to \pi^$s} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\(\displaystyle \lim_{x\to \pi^$s} $f=\lim_{x\to \pi^$s}  $F=\lim_{x\to \pi^$s}$g=\lim_{x\to \pi^$s}$ansd$G=$ans\)
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
