DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "littleneck.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.

rand_button();

TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(t=>'Real');  
$a=random(1,9,1);
$b=random(1,9,1);
if($a==$b){$b=$b+1}
if($a/$b==int($a/$b)){$a=$a/$b}
else{($a,$b)=reduce($a,$b)}
$d=random(-1,1,2);
$f1=Formula("$a*t*e**t")->reduce;
$f2=Formula("$b*($d-$d*e**t)")->reduce;
$f=$f1/$f2;
$B=-$b*$d;
$df1=Formula("$a*e**t+$a*t*e**t")->reduce;
$df2=Formula("$B*e**t")->reduce;
$F=$df1/$df2;
$C=$a/$B;

if($C==int($C)){$ans=Compute("$C")}
else{($n,$d)=reduce($a,$B);
$ans=Compute("$n/$d");
$C="\frac{$n}{$d}";
}



###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
\(\displaystyle \lim_{t\to 0} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\(\displaystyle \lim_{t\to 0} $f=\lim_{t\to  0} $F=$C\)
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
