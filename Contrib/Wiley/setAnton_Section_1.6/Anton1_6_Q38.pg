DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl","littleneck.pl",            
  "MathObjects.pl", "contextFraction.pl"         
);
# allow the student to change the seed for this problem.

rand_button();
TEXT(beginproblem());

###################################
# Setup
$a=random(1,12,1)*random(-1,1,2);



$f1=Formula("x**2-$a*sin(x)")->reduce;
$g1=Formula("-$a*sin(x)")->reduce;
$f2=Formula("x")->reduce;
$f=$f1/$f2;
$F=Formula("x+$g1/$f2")->reduce;
$c=Formula("x-$a")->reduce;
$e=$c->eval(x=>'0');
$ans=Compute("$e");
if($a<0){$d="+$e"}
else{$d="-$a"}

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the limit.
$PAR
Notes: Enter "DNE" if limit Does Not Exist.$PAR
\(\displaystyle \lim_{x\to 0} $f\)
 = \{ans_rule(20) \} 
$PAR
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\(\displaystyle \lim_{x\to 0}  $f=$ansd\lim_{x\to  0} \left[ $F\right]=0 $d=$ans\)
$PAR
$extra
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();