DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
# 
$a=non_zero_random(-8,8,1);
$ad=$a;
$b=random(2,5,1);
if($a==1){$ad=""}
if($a==-1){$ad="-1"}
$bs=$b**2;
($ab,$bsb)=reduce($a,$bs);
($ac,$bc)=reduce($a,$b);
if($bsb==1){$bsb=""}
if($bsb==-1){$bsb="-"}
if($bc==1){$bc=""}
if($bc==-1){$bc="-"}

Context("Fraction");
$a2=Compute("$a/$b");
$a3=Compute("$a/($b^2)");
Context("Numeric");
Context()->variables->add(t=>'Real',C=>'Real');
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$f=Formula("$a* e^{$b t-$b}")->reduce;
($A,$B)=reduce($a,$b);
($Ab,$Bb)=reduce($A,$B*$b);
$F=Formula("$A* e^{$b t-$b}/$B")->reduce;
$G=Formula("$Ab* e^{$b t-$b}/$Bb")->reduce;

$ans1=Compute("$a");
$ans2=Compute("$a2");
$ans3=Compute("$a3");
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Use the given information to find the position, velocity, speed, and acceleration at time \(t = 1\).
$PAR
\[a = $f; s = \frac{$ab}{$bsb e^{$b}}; \; v = \frac{$ac}{$bc e^{$b}}\] when \( t = 0\)
$PAR
$PAR Position \(=\) \{ans_rule(40) \} 
$PAR Velocity \(=\) \{ans_rule(40) \} 
$PAR Speed \(=\) \{ans_rule(40) \} 
$PAR Acceleration \(=\) \{ans_rule(40) \}
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans3->cmp);
ANS($ans2->cmp);
ANS($ans2->cmp);
ANS($ans1->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

acceleration\[a(1)=$ans1\]
\[v(t)=\displaystyle \int $f \; dt = $F +C\]
\[C=\frac{$ac}{$bc e^{$b}} - \frac{$ac}{$bc e^{$b}}=0\]
velocity\[v(1)=$a2\]
Note that \(|v(t)|=v(t)\) so speed is equal to velocity.
\[s(t)=\displaystyle \int $F \; dt = $G +D\]
\[D=\frac{$ab}{$bsb e^{$b}} - \frac{$ab}{$bsb e^{$b}}=0\]
Position
\[s(1)=$a3\]

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
