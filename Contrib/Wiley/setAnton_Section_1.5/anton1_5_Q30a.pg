DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "littleneck.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

rand_button();
TEXT(beginproblem());

###################################
# Setup  
$a=random(-10,-1,1);
$a2=($a)**2;
$x=$a;
Context("Fraction");
$k=Formula("0");
Context("Numeric");
Context()->variables->add(k=>'Real');
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$f1=Formula("($a)**2-x**2")->reduce;
$f2=Formula("k/x**2")->reduce;

$ans1 = Compute("$k");
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find a value of the constant \(k\), if possible, at which \[f(x)=\begin{cases}$f1 && x\leq$x \\ $f2 &&x>$x \end{cases}\] is continuous everywhere. 
$PAR
\(k=\) \{ans_rule(20) \} (enter "none" if no value).
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans1->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[f(x)=\begin{cases}$f1 && x\leq $x \\ $f2 &&x>$x \end{cases}\] is continuous everywhere as long as \[$a2-($a)^2=k/x^2\] \[k=$k\].
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
