## DBsubject('Calculus')
## DBchapter('Applications of the Definite Integral in Geometry, Science, and Engineering')
## DBsection('Volumes by Cylindrical Shells')
## KEYWORDS()
## TitleText1('Calculus')
## EditionText1('9')
## AuthorText1('Anton')
## Section1('6.3')
## Problem1('1')
## Author('Brian Burns')
## Institution('John Wiley & Sons')
#***************************************************************
#   Initialization - Load standard PG and MathObjects macros   
#***************************************************************
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
#
# Set Up - Set up variable context and formulation of problem
#
# allow the student to change the seed for this problem.

rand_button();
Context("Numeric");
#***********************************

#***********************************
$A=random(1,2,1);$B=random($A+1,4,1);$a=random(2,7-$B,1);
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$f=Formula("x**($a)")->reduce;
$h=Formula("x**($a+1)")->reduce;
$H=Formula("x**($a+2)/($a+2)")->reduce;


$g1=$f->string;
Context("Fraction");
$ansd=Compute("2*[($B)**($a+2)-($A)**($a+2)]/($a+2)");
$ans=Compute("$ansd*pi");
Context("Numeric");

#***********************
#   Plot the function
#***********************

$grminX=Compute("-1");
$grmaxX=Compute("$B+1");

$xgrid=Compute("($grmaxX-$grminX)");
$grmaxY=Compute("($B+1)**$a+1");
$grminY=Compute("-2");

$ygrid=Compute("int(($grmaxY-$grminY)/4)*2");
$f1minX= $grminX;
$f1maxX = $grmaxX;


$gr = init_graph($grminX,$grminY,$grmaxX,$grmaxY,
                 'axes'=>[0,0],'ticks'=>[$xgrid,$ygrid],'grid' =>[$xgrid,$ygrid],'size'=>[500,500]);

plot_functions($gr, "$g1 for x in <$f1minX,$f1maxX> using color:blue and weight:4");

plot_functions($gr, "$g1 for x in <$A,$B> using color:red and weight:4");
  $gr->moveTo($A,0);
  $gr->lineTo($A,($A)**$a,'red',4);
  $gr->moveTo($B,0);
  $gr->lineTo($B,($B)**$a,'red',4);
  $gr->moveTo($A,0);
  $gr->lineTo($B,0,'red',4); 
 # add a label
  $gr->lb( new Label($A+1,sqrt($a-$A),'y=f(x)',
      'blue','left','middle'));
  $gr->lb( new Label($B,1,'y=f(x)',
      'red','left','middle'));

  $gr->lb( new Label($A,-1,'x=a',
      'red','center','middle'));
  $gr->lb( new Label($B,-1,'x=b',
      'red','center','middle'));

#******************

# *********************
#   Problem Statement
# *********************

TEXT(beginproblem());
#
# Strings in Tex form (formula)
#
Context()->texStrings;
BEGIN_TEXT
$PAR
Use cylindrical shells to find the volume of the solid that results when the red region is revolved about the \(y\)-axis. 
$BR
$PAR
$BCENTER
\(f(x) = $f,\;a=$A,\;b=$B\)
$PAR
(click on image to enlarge) 
$BR
\{ image(insertGraph($gr,tex_size=>300,height=>100,width=>100)) \}
$BR


$ECENTER
Volume \(=\) \{ans_rule(20) \}



END_TEXT

Context()->normalStrings;
#
# Expect strings in standard form
#
# *******************************
#   Answer and Solution section
# *******************************
#
# Check student solution
#
ANS($ans->cmp());
Context()->texStrings;
#***************************
#  Explanation of solution  
#***************************
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(f(x)=$f\)

Volume\[\displaystyle =2\pi\int_{$A}^{$B}x\cdot f(x)\; dx =2\pi \int_{$A}^{$B} $h\; dx= 2\pi\left[$H\right]_{$A}^{$B} =$ansd \pi\]
The volume of the solid revolved around the \(y\)-axis is \($ansd \pi\).

$PAR
END_SOLUTION
Context()->normalStrings;
ENDDOCUMENT();
