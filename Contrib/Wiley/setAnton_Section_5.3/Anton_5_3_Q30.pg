DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "littleneck.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
# f(u(x))= sin(u)
# u(x)= 1/x
Context()->variables->add(u=>'Real');
$a=random(1,12,1);
$b=random(2,6,1)*random(-1,1,2);
$u=Formula("$b/x")->reduce;
$fu=Formula("sin(u)")->reduce;
$f=$fu->substitute(u=>$u);
$g=Formula("$a*x**(2)")->reduce;
$df=$f/$g;
$Fu=Formula("cos(u)");
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$A=Compute("-1/($a*$b)");
$C=Compute("-$A");
Context("Numeric");
$ans=Compute("$C*$F");
if($C==1){$C=""}
if($C==-1){$C="-"}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral using an appropriate substitution.
$PAR
\( \displaystyle \int $df \;dx\) \(=\) \{ans_rule(40) \} \(+\) \(C\)
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp(upToConstant=>1));

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($A du = \frac{ dx}{$g}\) and hence;
$PAR
\[ \displaystyle \int $df \;dx = $A \int $fu \;du= $A (-$Fu)+C=$C $F+C\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
