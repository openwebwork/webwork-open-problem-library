DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.


rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real');
$a=random(2,9,1);
$u=Formula("$a*sqrt(x)")->reduce;
$fu=Formula("sec^2(u)")->reduce;
$f=$fu->substitute(u=>$u);
$g=Formula("sqrt(x)")->reduce;
$df=$f/$g;
$Fu=Formula("tan(u)");
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$A=Compute("2/$a");
$C=Compute("2/($a)");
Context("Numeric");

$ans=Compute("$C*$F");
if($C==1){$C=""}
if($C==-1){$C="-"}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral using an appropriate substitution.
$PAR
\( \displaystyle \int $df \;dx\) \(=\) \{ans_rule(40) \} \(+\) \(C\)
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp(upToConstant=>1));

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($C \;du =  \frac{dx}{$g}\) and hence;
$PAR
\[ \displaystyle \int $df \;dx = $C \int $fu \;du= $C\;$B$Fu+C=$C $F+C\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
