DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.

rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real',t=>'Real');
$a=random(2,8,1);
$b=random(2,8,1);
$c=random(2,12,1)*random(-1,1,2);
$u=Formula("sin($b*t)")->reduce;
$fu=Formula("u**($a)")->reduce;
$f=$fu->substitute(u=>$u);
$g=Formula("$c*cos($b*t)")->reduce;
$df=$g*$f;
$Fu=Formula("u**($a+1)")->reduce;
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$A=Compute("$c/$b");
$B=Compute("1/($a+1)");
$C=Compute("$c/(($a+1)*$b)");
Context("Numeric");
Context()->variables->add(u=>'Real',t=>'Real');
$ans=Compute("$C*$F");

if($C==1){$C=""}
if($C==-1){$C="-"}
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral using an appropriate substitution.
$PAR
\( \displaystyle \int $df \;dt\) \(=\) \{ans_rule(40) \} \(+\) \(C\)
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp(upToConstant=>1));
###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($A du = $g dt\) and hence;
$PAR
\[ \displaystyle \int $df \;dt = $A \int $fu \;du= $A\cdot$B$Fu+C=$C $F+C\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
