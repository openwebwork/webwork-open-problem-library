DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "littleneck.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "parserPopUp.pl",
  "PGcourse.pl"
);

rand_button();
TEXT(beginproblem());

###################################
# Setup  
$A=random(1,6,1);
$b=random(1,15,1);
$s=random(-1,1,2);
$a=$s*$A;$b=-$s*$b;
$x=random(-7,7,1);
Context()->variables->add(e=>'Real');
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$xx=Formula("x-$x")->reduce;
$f=Formula("$a*x+$b")->reduce;
$index=random(0,0,1);
if($index==0){
  $L=$f->eval(x=>$x);
  $C="True";
}
else{
 $L=$f->eval(x=>-$x);
  $C="False";
}
$ansPop = PopUp(["?","True","False"], $C);
$ans=Compute("e/$A");
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Use Definition 1.4.1 from the book to prove that the following limit is correct.$PAR
\(\displaystyle \lim_{x\to $x} ($f)=$L\)
$PAR

Enter the largest possible value of \(\delta=\delta(\epsilon)>0\) (use \(e\) to represent \(\epsilon\)) such that \(|$xx|<\delta\) implies \(|($f)-$L|<\epsilon\). 
$PAR
\(\delta =\) \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

#ANS($ansPop->cmp);
ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\(|($f)-$L|=$A|$xx|<\epsilon\) if \(|$xx|<\delta=\frac{\epsilon}{$A}\)
$PAR
The limit is true with \(\delta=\frac{\epsilon}{$A}\).
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
