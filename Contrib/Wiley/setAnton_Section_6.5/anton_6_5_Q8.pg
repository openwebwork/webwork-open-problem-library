#***************************************************************
#   Initialization - Load standard PG and MathObjects macros   
#***************************************************************
DOCUMENT();
loadMacros("PGstandard.pl","MathObjects.pl",
           "PGgraphmacros.pl","littleneck.pl","contextFraction.pl" );
#
# Set Up - Set up variable context and formulation of problem
#
# allow the student to change the seed for this problem.

rand_button();
Context("Numeric");
Context()->variables->add(y=>'Real');
#***********************************

#***********************************
@la=(1,2,5,6,7,10,11,12,13,14);
$a=$la[random(0,$#la,1)];
$B=1;
$a1=$a+1;
$a2=$a+2;

$f=Formula("2*sqrt($a-y)")->reduce;
$df=Formula("-1/sqrt($a-y)")->reduce;
$h=Formula("4*pi*sqrt($a+1-y)")->reduce;
$H=Formula("8*pi*sqrt(($a+1-y)^3)/3")->reduce;
$g1=Formula("-x^2/4+$a")->string;
$C=Formula("8*pi/3");
($dum,$n,$r,$t,$e)=sqrt_simplify($a2,$n,$r,$t,$e);
$n=$a2*$n;
($dum,$n1,$r1,$t1,$e)=sqrt_simplify($a1,$n1,$r1,$t1,$e);
$n1=$n1*$a1;
$ansd="\left($n\sqrt{$r}-$n1\sqrt{$r1}\right)";
$ans=Compute("$C*($n*sqrt($r)-$n1*sqrt($r1))");
#***********************
#   Plot the function
#***********************

$grminX=Compute("-1");
$grmaxX=Compute("int(2*sqrt($a+1))+1");

$xgrid=Compute("($grmaxX-$grminX)");
$grmaxY=Compute("0.5");
$grminY=Compute("-1.5");

$ygrid=Compute("4");
$f1minX= 0;
$f1maxX = Compute("2*sqrt($a+1)");
$xA=Compute("2*sqrt($a)");

$gr = init_graph($grminX,$grminY,$grmaxX,$grmaxY,
                 'axes'=>[0,0],'ticks'=>[$xgrid,$ygrid],'grid' =>[$xgrid,$ygrid],'size'=>[500,500]);

plot_functions($gr, "$g1 for x in <0,$f1maxX> using color:blue and weight:4");

plot_functions($gr, "$g1 for x in <$xA,$f1maxX> using color:red and weight:4");
 
 # add a label

#******************

# *********************
#   Problem Statement
# *********************

TEXT(beginproblem());
#
# Strings in Tex form (formula)
#
Context()->texStrings;
BEGIN_TEXT
$PAR
Find the area of the surface generated by revolving the given curve about the \(y\)-axis. 
$BR
$PAR
\(x = $f,\; -1\leq y\leq 0\\)
$PAR

Surface Area  \(=\) \{ans_rule(40) \}



END_TEXT

Context()->normalStrings;
#
# Expect strings in standard form
#
# *******************************
#   Answer and Solution section
# *******************************
#
# Check student solution
#
ANS($ans->cmp());
Context()->texStrings;
#***************************
#  Explanation of solution  
#***************************
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
With \(f(y)=$f,\;a=-$B,\;b=0\)$PAR
Surface Area \[=\int_{a}^{b} 2\pi f(y) \sqrt{1+[f'(y)]^2}\;dy=2\pi\int_{-$B}^{0}  $f \sqrt{1+\left[$df\right]^2}\;dy=\int_{-$B}^{0}  $h \;dy=\left[$H\right]_{-$B}^{0}=$C$ansd\]

The surface area is \($C$ansd\).

END_SOLUTION
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BCENTER
$PAR
(click on image to enlarge) 
$BR
\{ image(insertGraph($gr,tex_size=>300,height=>100,width=>100)) \}
$BR


$ECENTER
END_SOLUTION
Context()->normalStrings;
ENDDOCUMENT();