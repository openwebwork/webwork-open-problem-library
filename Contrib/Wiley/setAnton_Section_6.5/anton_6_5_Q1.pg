#***************************************************************
#   Initialization - Load standard PG and MathObjects macros   
#***************************************************************
DOCUMENT();
loadMacros("PGstandard.pl","MathObjects.pl",
           "PGgraphmacros.pl","littleneck.pl","contextFraction.pl" );
#
# Set Up - Set up variable context and formulation of problem
#
# allow the student to change the seed for this problem.

rand_button();
Context("Numeric");
#***********************************

#***********************************
$a=random(2,10,1);$a2=2*$a;$as=$a**2;
$B=random(1,3,1); if($a==7){$B=2;}
($d,$N,$R,$T,$e)=sqrt_simplify(1+$as,$n,$r,$t,$e);
$C1=$a2*$N;
$C2=($B)**2*$a*$N;

$f=Formula("$a*x")->reduce;
$df=Formula("$a")->reduce;
$h=Formula("x")->reduce;
$H=Formula("x^2/2")->reduce;
$g1=$f->string;
if($R==1){$ans=Compute("$C2*pi")}
else{
$SR="\sqrt{$R}";
$ans=Compute("$C2*pi*sqrt($R)")}
#***********************
#   Plot the function
#***********************

$grminX=Compute("-1");
$grmaxX=Compute("$B+1");

$xgrid=Compute("($grmaxX-$grminX)");
$grmaxY=Compute("($B+1)*$a+1");
$grminY=Compute("-2");

$ygrid=Compute("int(($grmaxY-$grminY)/4)*2");
$f1minX= 0;
$f1maxX = $grmaxX;


$gr = init_graph($grminX,$grminY,$grmaxX,$grmaxY,
                 'axes'=>[0,0],'ticks'=>[$xgrid,$ygrid],'grid' =>[$xgrid,$ygrid],'size'=>[500,500]);

plot_functions($gr, "$g1 for x in <$f1minX,$f1maxX> using color:blue and weight:4");

plot_functions($gr, "$g1 for x in <0,$B> using color:red and weight:4");
 

#******************

# *********************
#   Problem Statement
# *********************

TEXT(beginproblem());
#
# Strings in Tex form (formula)
#
Context()->texStrings;
BEGIN_TEXT
$PAR
Find the area of the surface generated by revolving the given curve about the \(x\)-axis. 
$BR
$PAR
\(y = $f,\; 0\leq x\leq $B\\)
$PAR

Surface Area  \(=\) \{ans_rule(20) \}



END_TEXT

Context()->normalStrings;
#
# Expect strings in standard form
#
# *******************************
#   Answer and Solution section
# *******************************
#
# Check student solution
#
ANS($ans->cmp());
Context()->texStrings;
#***************************
#  Explanation of solution  
#***************************
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
With \(f(x)=$f,\;a=0,\;b=$B\)$PAR
Surface Area \[=\int_{a}^{b} 2\pi f(x) \sqrt{1+[f'(x)]^2}\;dx=2\pi\int_{0}^{$B}  $f \sqrt{1+[$df]^2}\;dx=$C1$SR\pi\int_{0}^{$B}  $h \;dx=$C1\pi$SR\left[$H\right]_{0}^{$B}=$C2\pi$SR\]

The surface area is \($C2\pi$SR\).

END_SOLUTION
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BCENTER
$PAR
(click on image to enlarge) 
$BR
\{ image(insertGraph($gr,tex_size=>300,height=>100,width=>100)) \}
$BR


$ECENTER
END_SOLUTION
Context()->normalStrings;
ENDDOCUMENT();