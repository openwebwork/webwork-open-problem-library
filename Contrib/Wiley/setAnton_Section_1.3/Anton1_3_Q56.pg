DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "littleneck.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);


rand_button();

TEXT(beginproblem());
###################################
# Setup  
$a=random(1,10,1);
$b=random(2,6,1);
$s=random(-1,1,2);
$a=$a*$s;
$sig=random(-1,1,2);
if($sig==-1){$sign="-"}
else{$sign="+"}
if(($a*($sig)**$b)>0){
  $y="+\infty";
  $ans=Compute("+inf");
}
else{
  $y="-\infty";
  $ans=Compute("0");  
}
Context()->variables->add(y=>'Real');
Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$f1=Formula("$a")->reduce;

$f2=Formula("x**$b")->reduce;
$g=$f1/$f2;
$f=Formula("e**($g)")->reduce;
$fy=Formula("e**(y)")->reduce;

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the following limit.
$PAR
Notes: Enter "DNE" if limit Does Not Exist.$PAR
\(\displaystyle \lim_{x\to 0^$sign} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
Since,
\[ \lim_{x\to 0$sign} $g=$y\]
then for \(y=$g\),
\[\displaystyle \lim_{y\to $y} $fy=$ans\]
Hence, 
\[ \lim_{x\to 0^$sign} $f=$ans\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
