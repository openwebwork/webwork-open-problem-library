DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "littleneck.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);
# allow the student to change the seed for this problem.


rand_button();

TEXT(beginproblem());

###################################
# Setup  
@al=(1,2,3,5,7);
$a=$al[random(0,$#al,1)];
$b=non_zero_random(-10,10,1);
$A=random(1,10,1);
$B=non_zero_random(-10,10,1);
if($a==1){
$ans=Compute("1/$A")->reduce;
$ansd="\frac{1}{$A}";
}
else{
$ans=Compute("sqrt($a)/$A")->reduce;
$ansd="\frac{\sqrt{$a}}{$A}";
}

Context()->reduction->set('(-x)+y'=>0);
Context()->reduction->set('(-x)-y'=>0);
$f1=Formula("sqrt($a*x**4+$b*x)")->reduce;

$f2=Formula("$A*x**2+$B")->reduce;
$f=$f1/$f2;
$F=Formula("($f1/x^2)/($f2/x^2)");
$g1=Formula("sqrt($a+$b/x**3)")->reduce;
$g2=Formula("$A+$B/x^2")->reduce;
$g=$g1/$g2;
###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Find the following limit.
$PAR
Notes: Enter "DNE" if limit Does Not Exist.$PAR
\(\displaystyle \lim_{x\to \infty} $f\)
 = \{ans_rule(20) \} 
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);


###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
\[\displaystyle \lim_{x\to \infty} $f= \lim_{x\to \infty} $F= \lim_{x\to \infty} $g=$ansd\]
END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
