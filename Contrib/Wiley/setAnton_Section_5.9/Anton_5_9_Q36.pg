DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.

rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real');
$a=random(1,8,1);
($Num,$N,$R,$roota,$Error)=sqrt_simplify($a,$Natnum,$Radnum,$Texstr,$Error);
$A=Formula("0");
$B=Formula("pi/4");
$u=Formula("$a*tan(x)")->reduce;
$uA=0;
$uB=$a;
$fu=Formula("sqrt(u)")->reduce;
$f=$fu->substitute(u=>$u);
$g=Formula("sec^2(x)")->reduce;
$df=$f*$g;
$Fu=Formula("sqrt(u**(3))")->reduce;
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$cc=Compute("1/($a)");
$Bc=Compute("2/3");
$c=Compute("2/(3*$a)");
$C=Compute("(2*$N)/3");
Context("Numeric");
$ans=Compute("$C*sqrt($R)");
if($cc==1) {$cc=""};
if($R==1){$Rd=""}
else{$Rd="\sqrt{$R}"}

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral by any method.
$PAR
\( \displaystyle \int^{$B}_{$A}  $df \;dx\) \(=\) \{ans_rule(20) \}
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($cc \; du = $g dx\) and \(u($A)=$uA,\;u($B)=$uB\), hence;
$PAR
\[ \displaystyle \int^{$B}_{$A} $df \;dx = $cc \int^{$uB}_{$uA} $fu \;du=$cc\left[ $Bc$Fu\right]^{$uB}_{$uA}=$c \left[$Fu\right]^{$uB}_{$uA}=$C$Rd\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
