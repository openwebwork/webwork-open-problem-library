DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",            
  "MathObjects.pl","littleneck.pl","contextFraction.pl"          
);
# allow the student to change the seed for this problem.

rand_button();


TEXT(beginproblem());

###################################
# Setup
Context()->variables->add(u=>'Real');
$a=random(2,8,1);
$b=1;
$c=random(2,12,1)*random(-1,1,2);
$cc=-$c;
$A=Formula("pi/2");
$B=Formula("pi");
$u=Formula("cos(x)+$b")->reduce;
$uA=0;
$uB=1;
$fu=Formula("u**($a)")->reduce;
$f=$fu->substitute(u=>$u);
$g=Formula("$c*sin(x)")->reduce;
$df=$g*$f;
$Fu=Formula("u**($a+1)")->reduce;
$F=$Fu->substitute(u=>$u);
Context("Fraction");
$Bc=Compute("1/($a+1)");
$C=Compute("$c/(($a+1))");
Context("Numeric");
$ans=Compute("$C");

###################################
# Main text
Context()->texStrings;
BEGIN_TEXT
Evaluate the integral by any method.
$PAR
\( \displaystyle \int^{$B}_{$A}  $df \;dx\) \(=\) \{ans_rule(20) \}
END_TEXT

###################################
# Answers

#$showPartialCorrectAnswers = 0;

ANS($ans->cmp);

###################################
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
For \(u=$u\) we have \($cc du = $g dx\) and \(u($A)=$uB,\;u($B)=$uA\), hence;
$PAR
\[ \displaystyle \int^{$B}_{$A} $df \;dx = $c \int^{$uB}_{$uA} $fu \;du=$c\left[ $Bc$Fu\right]^{$uB}_{$uA}=$C \left[$Fu\right]^{$uB}_{$uA}=$C\]
$BR

END_SOLUTION
Context()->normalStrings;

###################################
ENDDOCUMENT();
