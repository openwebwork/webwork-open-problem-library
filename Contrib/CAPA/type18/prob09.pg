ANS( CAPA_ans( $delK   , 'format' => "%0.2e" , 'sig' => '2 PLUS 3', 'reltol' => 5   ,  'wgt' => $prob_val    ,  'tries' => $prob_try    ,  'unit' => 'J'    ) ); 
