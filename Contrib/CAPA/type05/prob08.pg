TEXT("$BR$BR",ans_rule(30),"$BR");
ANS( CAPA_ans( $s_car   , 'format' => "%0.2e" , 'sig' => '3 plus 13', 'reltol' => 2   ,  'wgt' => $prob_val    ,  'tries' => $prob_try    ,  'unit' => 'm/s'    ) ); 
