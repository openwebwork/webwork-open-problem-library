$mj = random( 90.0   , 110.2   , 0.5   )   ;  # in kg
$ma = random( 55.0   , 75.2   , 0.5   )   ;  # in kg
$a = random( 7.00   , 10.05   , 0.10   )   ;  # m/s^2
$dja = random( 12.0   , 18.1   , 0.2   )   ;  # in m
$dah = random( 3.0   , 6.1   , 0.2   )   ;  # in m
$t1 = ( $mj  + $ma    ) * $smallg   ;  
$t2 = $mj * $smallg   ;  
$t3 = ( $mj  + $ma    ) * ( $smallg  + $a    )   ;  
$t4 = $mj * ( $smallg  + $a    )   ;  
