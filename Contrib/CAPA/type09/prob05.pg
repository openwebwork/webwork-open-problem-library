$mass = random( 10000.0   , 20000.0   , 100.0   )   ;  
$speed = random( 400.0   , 700.   , 10.0   )   ;  
$angle = random( 20.0   , 60.0   , 2.5   )   ;  
$Flift = $mass * $smallg   ;  
$Fcp = $Flift * sin( $angle * $degrad   )   ;  
$r = $mass * pow( $speed * 1000.0 /  3600.0   , 2.0   ) /  $Fcp   ;  
$Fylift = $Flift * cos( $angle * $degrad   )   ;  
$Fynet = $Fylift  - $mass * $smallg   ;  
$aynet = abs( $Fynet   ) /  $mass   ;  
## 
CAPA_import( " ${CAPA_Tools}Problem " );   
## 
TEXT(CAPA_EV (<<'END_OF_TEXT'));
An airplane of mass \{  spf( $mass    , "%0.0f" ) \} \{ $kg_u \} is flying in a straight line at a constant altitude and with a speed of \{  spf( $speed    , "%0.1f" ) \} \{ $kmPh_u \}.  The force that keeps the airplane in the air is provided entirely by the aerodynamic lift generated by the wings.  The direction of this force is perpendicular to the  wing surface.  Calculate the magnitude of the lift generated by the wings of this airplane.
END_OF_TEXT

## 

TEXT("$BR$BR",ans_rule(30),"$BR");
ANS( CAPA_ans( $Flift   , 'format' => "%0.2e" , 'sig' => '3 plus 13', 'reltol' => 1   ,  'wgt' => $prob_val    ,  'tries' => $prob_try    ,  'unit' => 'N'    ) ); 
