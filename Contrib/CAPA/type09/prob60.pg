$radius = random( 10.0   , 20.25   , .5   )   ;  # in meters
$mass = random( 200.0   , 505.0   , 10.   )   ;  # in kilograms
$speed = sqrt( $smallg * $radius   )   ;  
## 
CAPA_import( " ${CAPA_Tools}Problem " );   
## 
TEXT(CAPA_EV (<<'END_OF_TEXT'));
The summit of a roller coaster has the shape of a circle with a radius of \{  spf( $radius    , "%0.1f" ) \} \{ $m_u \}.  What is the maximum speed a single car, of mass \{  spf( $mass    , "%0.0f" ) \} \{ $kg_u \}, can have at the summit if it is not to leave the track?
END_OF_TEXT

## 

TEXT("$BR$BR",ans_rule(30),"$BR");
ANS( CAPA_ans( $speed   , 'format' => "%0.2e" , 'sig' => '3 PLUS 13', 'reltol' => 1   ,  'wgt' => $prob_val    ,  'tries' => $prob_try    ,  'unit' => 'm/s'    ) ); 
