TEXT("$BR",ans_rule(30),"$BR");
ANS( CAPA_ans( $a2   , 'format' => "%0.2e" , 'sig' => '3 plus 13', 'reltol' => 1   ,  'wgt' => $prob_val    ,  'tries' => $prob_try    ,  'unit' => 'm/s^2'    ) ); 
