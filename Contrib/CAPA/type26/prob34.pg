$period = random( 1.1   , 5.65   , .1   )   ;  
## 
CAPA_import( " ${CAPA_Tools}Problem " );   
TEXT(CAPA_EV (<<'END_OF_TEXT'));
A mass on a spring is hung vertically on the earth where it is observed to have a period of \{  spf( $period    , "%0.1f" ) \} \{ $s_u \}.  The gravitational field on the moon is 1/6 of that on the earth.  What is the period of this simple harmonic oscillator on the moon?
END_OF_TEXT

## 

TEXT("$BR$BR",ans_rule(30),"$BR");
ANS( CAPA_ans( $period   , 'format' => "%0.2e" , 'sig' => '3 PLUS 13', 'reltol' => 1   ,  'wgt' => $prob_val    ,  'tries' => $prob_try    ,  'unit' => 's'    ) ); 
