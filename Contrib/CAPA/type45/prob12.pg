END_OF_TEXT

## 
CAPA_hint( "Laws of thermodynamics.");   

TEXT("$BR$BR",ans_rule(50),"$BR");
ANS( CAPA_ans( $efficiency   , 'format' => "%0.2e" , 'sig' => '3 PLUS 13', 'reltol' => 1   ,  'wgt' => $prob_val    ,  'tries' => $prob_try     ) ); 
