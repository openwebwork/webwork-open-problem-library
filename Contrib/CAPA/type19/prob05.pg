TEXT("$BR$BR",ans_rule(30),"$BR");
ANS( CAPA_ans( $angaccel   , 'format' => "%0.3e" , 'sig' => '3 PLUS 13', 'reltol' => 5   ,  'wgt' => $prob_val    ,  'tries' => $prob_try    ,  'unit' => 'rad/s^2'    ) ); 
