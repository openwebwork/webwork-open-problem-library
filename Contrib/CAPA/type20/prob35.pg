$rcyl = random( 8.0   , 12.1   , 0.2   )   ;  # in cm
$mcyl = random( 9.0   , 11.1   , 0.1   )   ;  # in kg
$mfred = random( 0.80   , 1.21   , 0.02   )   ;  # in kg
$Icyl = $mcyl * $rcyl * $rcyl * 0.5 * 0.01 * 0.01   ;  
$facc = $smallg /  ( 1.0  + 0.5 * $mcyl /  $mfred    )   ;  
