TEXT("$BR",ans_rule(30),"$BR$BR");
ANS( CAPA_ans( $g   , 'format' => "%0.2e" , 'sig' => '3 plus 13', 'reltol' => 1   ,  'wgt' => $prob_val    ,  'tries' => $prob_try    ,  'unit' => 'm/s^2'    ) ); 
