$a = RadioButtons([0, 1, 2, 3, 4, 5], $a_ans, noindex => 1);

$b_ans = random(0, 4);
$b_x = &$rule2($b_ans);
$b = RadioButtons([0, 1, 2, 3, 4, 5], $b_ans, noindex => 1);

