DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "parserRadioButtons.pl",
);

    
TEXT(beginproblem());

Context("Fraction");

sub pretty_log {
    my ($b, $x) = @_;
    if ($b == 1) {
        $log = "\ln";
    } elsif ($b == 10) {
        $log = "\log";
    } else {
        $log = "\log_{$b}";
    }
    return "$log $x";
}

sub format_fraction {
    my ($numerator, $denominator) = @_;
    if ($numerator == $denominator) {
        return "";
    } else {
        return Fraction($numerator / $denominator)->TeX;
    }
}

sub numerator {
    my $frac = shift;
    my @value = $frac->value;
    return $value[0];
}

sub denominator {
    my $frac = shift;
    my @value = $frac->value;
    return $value[1];
}

sub fraction_pair {
    my $a = random(1, 9);
    my $b = random(1, 9);
    my $frac = Fraction($a / $b);
    return (numerator($frac), denominator($frac));
}

sub format_radical {
    my ($power, $root, $var) = @_;
    if ($root == 1) {
        $sqrt = "";
    } elsif ($root == 2) {
        $sqrt = "\sqrt ";
    } else {
        $sqrt = "\sqrt[$root]";
    }
    if ($power == 1) {
        $pow = "";
    } else {
        $pow = "^$power";
    }
    return "$sqrt {$var$pow}";
}

sub format_answer {
    my ($base, $a, $b, $c, $d, $e, $f, $g, $h) = @_;
    return "\(\displaystyle" . pretty_log($base,
        "\left(\frac{" . format_radical($a, $b, "x") . 
        format_radical($c, $d, "y") . "}{" .
        format_radical($e, $f, "z") .
        format_radical($g, $h, "w") . "}\right)\)");
}

sub add_options {
    my $base = shift;
    my @options = shift;
    while (@options < 4) {
        my ($a, $b) = fraction_pair();
        my ($c, $d) = fraction_pair();
        my ($e, $f) = fraction_pair();
        my ($g, $h) = fraction_pair();
        push(@options,
            format_answer($base, $a, $b, $c, $d, $e, $f, $g, $h));
        @options = uniq(@options);
    }
    return lex_sort(@options);
}

$base = random(1, 16);
($a, $b) = fraction_pair();
($c, $d) = fraction_pair();
($e, $f) = fraction_pair();
($g, $h) = fraction_pair();
$logstr = format_fraction($a, $b) . pretty_log($base, "x") . "+" .
    format_fraction($c, $d) . pretty_log($base, "y") . "-" .
    format_fraction($e, $f) . pretty_log($base, "z") . "-" .
    format_fraction($g, $h) . pretty_log($base, "w");
    
$ans = format_answer($base, $a, $b, $c, $d, $e, $f, $g, $h);

$buttons = RadioButtons([add_options($base, $ans)], $ans,
    separator => $PAR);

BEGIN_TEXT

Rewrite \($logstr\) as a single logarithm.
$PAR
\{$buttons->buttons\}

END_TEXT

ANS($buttons->cmp);

ENDDOCUMENT();