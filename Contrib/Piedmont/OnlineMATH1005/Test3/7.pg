DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserRadioButtons.pl",
  "PGgraphmacros.pl"
);

    
TEXT(beginproblem());

Context()->noreduce('(-x)-y');
Context()->noreduce('(-x)+y');

sub add_options {
    my @options = @_;
    while (@options < 4) {
        my $p, $q;
        do {
            $p = non_zero_random(-9, 9);
            $q = non_zero_random(-9, 9);
        } while ($p > $q);
        if ($p == $q) {
            push(@options,
                "\(" . Formula("(x + $p)^2")->reduce->TeX . "\)");
        } else {
            push(@options,
                "\(" . Formula("(x + $p)(x + $q)")->reduce->TeX . "\)");
        }
        @options = uniq(@options);
    }
    return lex_sort(@options);
}

# we want the factors sorted so we don't end up with the same answer
# showing up twice
do {
    $p = non_zero_random(-9, 9);
    $q = non_zero_random(-9, 9);
} while ($p >= $q || $p == -$q);

$b = $p + $q;
$c = $p * $q;

$quadratic = "\(" . Formula("x^2 + $b * x + $c")->reduce->TeX . "\)";
$ans = "\(" . Formula("(x + $p)(x + $q)")->reduce->TeX . "\)";

$buttons = RadioButtons([add_options($ans)], $ans);

BEGIN_TEXT

Factor $quadratic.
$PAR

\{$buttons->buttons\}

END_TEXT

ANS($buttons->cmp);


ENDDOCUMENT();