## MATH 1005 Online Test 3
## Factoring non-monic quadratics
## ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Factoring)
## DBsection(Factoring trinomials)
## Level(2)
## KEYWORDS('factoring')
## Author(Doug Torrance)
## Institution(Piedmont)

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserRadioButtons.pl",
  "PGgraphmacros.pl"
);

    
TEXT(beginproblem());

Context()->noreduce('(-x)-y');
Context()->noreduce('(-x)+y');

sub add_options {
    my @options = @_;
    while (@options < 4) {
        my $p, $q, $r, $s;
        do {
            $p = random(2, 6);
            $q = non_zero_random(-9, 9);
            $r = random(2, 6);
            $s = non_zero_random(-9, 9);
        } while ($p > $r || ($p == $r && $q >= $s));
        push(@options,
                "\(" . Formula("($p * x + $q)($r * x + $s)")->reduce->TeX .
                "\)");
        @options = uniq(@options);
    }
    return lex_sort(@options);
}

do {
    $p = random(2, 6);
    $q = non_zero_random(-9, 9);
    $r = random(2, 6);
    $s = non_zero_random(-9, 9);
} while ($p > $r || ($p == $r && $q >= $s));

$quadratic = "\(" .
    Formula(
        "$p * $r * x^2 + ($p * $s + $q * $r) * x + $q * $s")->reduce->TeX .
        "\)";
$ans = "\(" . Formula("($p * x + $q)($r * x + $s)")->reduce->TeX . "\)";

$buttons = RadioButtons([add_options($ans)], $ans);

BEGIN_TEXT

Factor $quadratic.
$PAR

\{$buttons->buttons\}

END_TEXT

ANS($buttons->cmp);


ENDDOCUMENT();