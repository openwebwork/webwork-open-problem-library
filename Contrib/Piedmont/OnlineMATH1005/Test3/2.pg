DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserRadioButtons.pl",
  "PGstatisticsmacros.pl",
);

    
TEXT(beginproblem());

sub sig_digits {
    my $x = shift;
    $sig_place = ceil(-log($x) / log(10));
    Round($x * 10**($sig_place + 3)) / (10**($sig_place + 3));
}
    

sub add_options {
    my $ratio = shift;
    my $unit_str = shift;
    my @options = @_;
    while (@options < 4) {
        push(@options,
            sig_digits($ratio * random(1, 10, 0.10)) . " $unit_str");
        @options = uniq(@options);
    }
    return lex_sort(@options);
}

# length or volume
$type = random(1, 2);
$type = 2;

if ($type == 1) { #length
    $unit1 = random(1, 4);
    if ($unit1 == 1) {
        $unit1_str = 'in';
        $unit1_to_m = 2.54 / 100;
    } elsif ($unit1 == 2) {
        $unit1_str = 'ft';
        $unit1_to_m = 1 / 3.281;
    } elsif ($unit1 == 3) {
        $unit1_str = 'yd';
        $unit1_to_m = 1 / 1.094;
    } elsif ($unit1 == 4) {
        $unit1_str = 'mi';
        $unit1_to_m = 1609;
    }
    $unit2 = random(1, 6);
    if ($unit2 == 1) {
        $unit2_str = 'mm';
        $m_to_unit2 = 1000;
    } elsif ($unit2 == 2) {
        $unit2_str = 'cm';
        $m_to_unit2 = 100;
    } elsif ($unit2 == 3) {
        $unit2_str = 'dm';
        $m_to_unit2 = 10;
    } elsif ($unit2 == 4) {
        $unit2_str = 'dam';
        $m_to_unit2 = 1 / 10;
    } elsif ($unit2 == 5) {
        $unit2_str = 'hm';
        $m_to_unit2 = 1 / 100;
    } elsif ($unit2 == 6) {
        $unit2_str = 'km';
        $m_to_unit2 = 1 / 1000;
    }
    $ratio = $unit1_to_m * $m_to_unit2;
} elsif ($type == 2) { #volume
    $unit1 = random(1, 7);
    if ($unit1 == 1) {
        $unit1_str = 'tsp';
        $unit1_to_L = 1 / 3 / 2 * 29.57 / 1000;
    } elsif ($unit1 == 2) {
        $unit1_str = 'tbsp';
        $unit1_to_L = 1 / 2 * 29.57 / 1000;
    } elsif ($unit1 == 3) {
        $unit1_str = 'fl oz';
        $unit1_to_L = 29.57 / 1000;
    } elsif ($unit1 == 4) {
        $unit1_str = 'c';
        $unit1_to_L = 8 * 29.57 / 1000;
    } elsif ($unit1 == 5) {
        $unit1_str = 'pt';
        $unit1_to_L = 2 * 8 * 29.57 / 1000;
    } elsif ($unit1 == 6) {
        $unit1_str = 'qt';
        $unit1_to_L = 3.785 / 4;
    } elsif ($unit1 == 7) {
        $unit1_str = 'gal';
        $unit1_to_L = 3.785;
    }
    $unit2 = random(1, 2);
    if ($unit2 == 1) {
        $unit2_str = 'mL';
        $L_to_unit2 = 1000;
    } elsif ($unit2 == 2) {
        $unit2_str = 'L';
        $L_to_unit2 = 1;
    }
    $ratio = $unit1_to_L * $L_to_unit2;
}



$num = random(1, 10, 0.01);
$ans = sig_digits($num * $ratio) . " $unit2_str";

$buttons = RadioButtons([add_options($ratio, $unit2_str, $ans)], $ans);
        
BEGIN_TEXT

Convert $num $unit1_str to $unit2_str.
$PAR 

\{$buttons->buttons\}

END_TEXT

ANS($buttons->cmp);

ENDDOCUMENT();