DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserRadioButtons.pl",
);

    
TEXT(beginproblem());

Context()->noreduce('(-x)-y','(-x)+y');

sub get_interval {
    my $endpoint = shift;
    my $ineq = shift;
    if ($ineq == 0) { # <
        return "\((-\infty, $endpoint)\)";
    } elsif ($ineq == 1) { # <=
        return "\((-\infty, $endpoint]\)";
    } elsif ($ineq == 2) { # >
        return "\(($endpoint, \infty)\)";
    } else { # >=
        return "\([$endpoint, \infty)\)";
    }
}

sub add_options {
    my @options = shift;
    while (@options < 4) {
        push(@options, get_interval(random(-9, 9), random(0, 3)));
        @options = uniq(@options);
    }
    return lex_sort(@options);
}


$x = random(-9, 9);
$m = random(-9, -2);
$b = non_zero_random(-9, 9);
$rhs = $m * $x + $b;
$lhs = Formula("$m x + $b")->reduce->TeX;

@ineq_symbols = ("<", "\leq", ">", "\geq");
$ineq = random(0, 3);

$solution = get_interval($x, ($ineq + 2) % 4);
    
$buttons = RadioButtons([add_options($solution)], $solution,
    separator => $PAR);

BEGIN_TEXT

Solve \($lhs $ineq_symbols[$ineq] $rhs\).
$PAR
\{$buttons->buttons()\}
END_TEXT

ANS($buttons->cmp);

ENDDOCUMENT();