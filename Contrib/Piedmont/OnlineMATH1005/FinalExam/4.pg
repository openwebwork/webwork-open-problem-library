DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserRadioButtons.pl",
);
    
TEXT(beginproblem());

Context()->noreduce('(-x)-y','(-x)+y');

sub get_equation {
    my $m = shift;
    my $b = shift;
    return "\(y = " . Formula("$m * x + $b")->reduce->TeX . "\)";
}

sub add_options {
    my @options = shift;
    while (@options < 4) {
        push(@options, get_equation(non_zero_random(-6, 6), random(-6, 6)));
        @options = uniq(@options);
    }
    return lex_sort(@options);
}

$m = non_zero_random(-6, 6);
$b = non_zero_random(-6, 6);

$x1 = random(-6, 6);
do {
    $x2 = random(-6, 6);
} while ($x1 == $x2);

$correct_answer = get_equation($m, $b);
$buttons = RadioButtons([add_options($correct_answer)], $correct_answer);

$y1 = $m * $x1 + $b;
$y2 = $m * $x2 + $b;

BEGIN_TEXT

Find the equation for the line which passes through the points
($x1, $y1) and ($x2, $y2).
$PAR

\{$buttons->buttons\}

END_TEXT

ANS($buttons->cmp);

ENDDOCUMENT();