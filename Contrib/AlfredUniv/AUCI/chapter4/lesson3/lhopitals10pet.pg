## DBchapter('Applications of Differentiation')
## DBsection('Indeterminate Forms and L'Hospital's Rule')
## AuthorText1('Petrillo')
## TitleText1('AUCI')
## EditionText1('1')
## Section1('4.3')
## Problem1('3')
## KEYWORDS('calculus')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "unionTables.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context()->reduction->set('(-x)+y'=>0,'(-x)-y'=>0);

$a = Compute(non_zero_random(-9,9));
$b = Compute(non_zero_random(-9,9));
$c = Compute(non_zero_random(-9,9));

if ($a*$c+$b == 0) {$c++;};
$limit = Compute("-$c");

$coeff1 = Compute("$a");
$coeff2 = Compute("$a*$c+$b");
$coeff3 = Compute("$b*$c");
 
$num = Formula("$coeff1 x^2 + $coeff2 x + $coeff3")->reduce;
$zero = $num->eval(x=>"$limit");
$dnum = $num->D('x');
$den = Formula("x+$c")->reduce;
$dden = $den->D('x');
$ans = $dnum->eval(x=>"$limit");

Context()->texStrings;
BEGIN_TEXT
$BR
Use L'Hopital's rule to evaluate each limit.
$BR
\{BeginTable(center=>0).
     Row(['(a)\(\lim\limits_{x\rightarrow $limit}\frac{$num}{$den}\)','\( = \lim\limits_{x\rightarrow $limit} \)',ans_rule.$BR.'-----------------------------------'.$BR.ans_rule,
     ],separation=>2).
Row(['','','',
     ],separation=>2).
     Row(['','\( = \)',ans_rule,
     ],separation=>2).
EndTable();
\}
  $BR
END_TEXT


Context()->normalStrings;


ANS($dnum->cmp());
ANS($dden->cmp());
ANS($ans->cmp());

$showPartialCorrectAnswers = 1;
Context()->reduction->set('(-x)+y'=>0,'(-x)-y'=>0);

$a = Compute(non_zero_random(-9,9));
$b = Compute(non_zero_random(-9,9));
$c = Compute(non_zero_random(-9,9));


if ($a*$c+$b == 0) {$c++;};
$d = $c + 1;
$limit = Compute("-$c");

$coeff1 = Compute("$a");
$coeff2 = Compute("$a*$c+$b");
$coeff3 = Compute("$b*$c");
 
$num = Formula("$coeff1 x^2 + $coeff2 x + $coeff3")->reduce;
$zero = $num->eval(x=>"$limit");
$dnum = $num->D('x');
$den = Formula("(x + $c)(x + $d)")->reduce;
$dden = $den->D('x');
$nans = $dnum->eval(x=>"$limit");
$dans = $dden->eval(x=>"$limit");
$ans = $nans;

Context()->texStrings;
BEGIN_TEXT
\{BeginTable(center=>0).
     Row(['(b)\(\lim\limits_{x\rightarrow $limit}\frac{$num}{$den}\)','\( = \lim\limits_{x\rightarrow $limit} \)',ans_rule.$BR.'-----------------------------------'.$BR.ans_rule,
     ],separation=>2).
Row(['','','',
     ],separation=>2).
     Row(['','\( = \)',ans_rule,
     ],separation=>2).
EndTable();
\}
END_TEXT


Context()->normalStrings;


ANS($dnum->cmp());
ANS($dden->cmp());
ANS($ans->cmp());


ENDDOCUMENT();        # This should be the last executable line in the problem.
