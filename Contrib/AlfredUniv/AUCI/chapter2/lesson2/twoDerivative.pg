DOCUMENT();

# Load whatever macros you need for the problem
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl");
 
## Show partial correct answers
$showPartialCorrectAnswers = 1;
## Display the problem information
TEXT(beginproblem());

## Declare Variables

## Function Definition
$a0 = non_zero_random(-10,10);
$a1 = non_zero_random(-10,10);
$a2 = non_zero_random(-10,10);

$f = Formula("$a0*x^2+$a1*x+$a2")->reduce;
$df = $f->D('x');
$ddf = $df->D('x');

$b0 = non_zero_random(-10,10);
$b1 = non_zero_random(-10,10);
$b2 = non_zero_random(-10,10);

$g = Formula("$b0*x^2+$b1*x+$b2")->reduce;
$dg = $g->D('x');
$ddg = $dg->D('x');

Context()->texStrings;
BEGIN_TEXT
$BR
1.  If \(y=$f\), then $PAR
\(y' =\)  \{$df->ans_rule()\}, and 
$BR
\(y'' = \) \{$ddf->ans_rule()\}. 
$BR
$BR
2.  If \(y=$g\), then $PAR
\(y' = \) \{$dg->ans_rule()\}, and 
$BR
\(y'' = \) \{$ddg->ans_rule()\}. 

END_TEXT
Context()->normalStrings;
ANS($df->cmp);
ANS($ddf->cmp);
ANS($dg->cmp);
ANS($ddg->cmp);



ENDDOCUMENT();
