##DESCRIPTION
##  Algebra problem: true or false for inequality 
##ENDDESCRIPTION

##KEYWORDS('integration', 'net', 'change', 'linear')

## DBsubject('Calculus')
## DBchapter('Integrals')
## DBsection('The Fundamental Theorem of Calculus')
## Date('8/16/2011')
## Author(Darwyn Cook')
## Institution('Alfred University')
## TitleText1('AUCI')
## EditionText1('1')
## AuthorText1('Cook, Petrillo, Frey')
## Section1('2.6')
## Problem1('')
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "PGcourse.pl",
  "PGgraphmacros.pl",
  "unionTables.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");
$refreshCachedImages = 1;
#
#  The function to plot
#
$m = Compute(non_zero_random(-3,3));
$b = -4*$m;
$x0 = Compute(non_zero_random(-2.5,0,0.5));
$x1 = $x0+Compute(random(1,2,0.5));
$f = Formula("$m*x+$b")->reduce;


#
#  Graph size
#
($xm,$xM) = (-3,3);
$yM = $xM*abs($m)+abs($b);
$ym=-$yM;
@size = (400,400);

##############################################

#
#  The plot defaults
#
@Goptions = (
  $xm,$ym,$xM,$yM,                            # dimensions of graph
  axes => [0,0], grid => [6,2*$yM],   # number of grid lines
  size => [$size[0],$size[1]]                               # pixel dimension
);

$plotdomain  = "x in <$xm,$xM>";
$plotoptions = "using color:red and weight=2";

#
#  Set up the question and answer list
#

$gr = init_graph(@Goptions);
$gr->new_color("lightgreen",156,215,151); 
plot_functions($gr,"$f for $plotdomain $plotoptions");
$xleft = $x0;
$xright = $x1;
$y0 = $f->eval(x=>"$xleft");
$y1 = $f->eval(x=>"$xright");
$gr->moveTo($xleft,0);
$gr->lineTo($xright,0,"red",2); # bottom edge
$gr->moveTo($xright,0);
$gr->lineTo($xright,$y1,"red",2); # hypotenuse
$gr->moveTo($xleft,0);
$gr->lineTo($xleft,$y0,"red",2); # left edge
if ((($y0 > 0)&&($m>0))||(($y0 < 0)&&($m < 0))){
$gr->fillRegion([$xleft+0.1,$y0,"lightgreen"]);}
else {
$gr->fillRegion([$xleft+0.1,$y1,"lightgreen"]);};
$fig=image(insertGraph($gr),width=>$size[0],height=>$size[1]);


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
\{$fig\}
$BR
$BR
(a) Find the slope-intercept equation for the line in the figure.
$BR
$BR
$SPACE $SPACE $SPACE
\(y = \)  \{ans_rule(5)\}
$BR
$BR 
(b) Set up an integral that represents the area of the region.  
$BR
$BR

\{
 BeginTable(center=>0).
     Row(['$SPACE $SPACE $SPACE',ans_rule(1).$BR.'\(\displaystyle\int\)'.$BR.ans_rule(1),ans_rule(5),'dx ',
     ],separation=>2).
   EndTable();
\}
$BR
$BR
(c) Compute the area of the shaded region.
$BR
$BR
$SPACE $SPACE $SPACE
Area = \{ans_rule(5)\}


END_TEXT
Context()->normalStrings;

##################################################
#  Answers

$showPartialCorrectAnswers = 0;
ANS(Formula("$m*x+$b")->cmp() );
ANS($x0->cmp() );
ANS($x1->cmp() );
ANS(Formula("$m*x+$b")->cmp() );
ANS(Compute("(0.5*$m*($x1)^2+$b*$x1)-(0.5*$m*($x0)^2+$b*$x0)")->cmp() );

ENDDOCUMENT();        # This should be the last executable line in the problem.
