DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGgraphmacros.pl",
  "answerHints.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;
$refreshCachedImages=1;
##############################################################
#
#  Setup
#
#
Context("Numeric");

$a = Compute(non_zero_random(-9,9));

$f = Formula("$a*x^2")->reduce;
$x = Real(non_zero_random(-9,9));
$dx = Real(non_zero_random(-0.9,0.9,0.05));


##############################################################\
#
# Compute delta y

$xplusdeltax = Real("$x+$dx");
$y0 = $f->eval(x=>$x);
$y1 = $f->eval(x=>$xplusdeltax);
$deltay = Real("$y1-$y0");

##############################################################
#
# compute dy
$fprime = $f->D('x');
$fprimex = $fprime->eval(x=>$x);
$dy = $fprimex*$dx;

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Let \(y = $f\). 
$BR
$BR
If \(x = $x\) and \(\Delta x = $dx\), then \(\Delta y = \)\{ans_rule(5)\} and \(dy = \)\{ans_rule(5)\}.
END_TEXT
#Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS($deltay->cmp());
ANS($dy->cmp());
ENDDOCUMENT();        
