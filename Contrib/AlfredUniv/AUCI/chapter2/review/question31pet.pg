DOCUMENT();


# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "unionTables.pl",
  "PGcourse.pl"
);
Context()->variables->are(u=>"Real",x=>"Real");
## Show partial correct answers
$showPartialCorrectAnswers = 0;

## Display the problem information
TEXT(beginproblem());

$m = Real(non_zero_random(-9,9));
$b = Real(non_zero_random(-9,9));
$c = Real(non_zero_random(-9.1,9.1,0.25));
$d = Real(non_zero_random(-9.2,9.2,0.25));

$lowerlimit1 = Real(non_zero_random(-9,9));
$upperlimit1 = $lowerlimit1 + Real(random(1,9));
$lowerlimit2 = Real(non_zero_random(-9,9));
$upperlimit2 = $lowerlimit2 + Real(random(1,9));
$lowerlimit3 = Real(non_zero_random(-9,9));
$upperlimit3 = $lowerlimit3 + Real(random(1,9));

Context()->texStrings;
BEGIN_TEXT
Evaluate the following definite integrals using the Fundamental Theorem of Calculus:
$BR
$BR
(a)  
\{
 BeginTable(center=>0).
     Row(['\(\displaystyle\int_{$lowerlimit2}^{$upperlimit2} ($m x+$b) \hskip 2pt dx =\)',ans_rule,'\(\Bigg\vert\)',ans_rule(3).$BR.$BR.ans_rule(3),' = ',ans_rule(18),
     ],separation=>2).
   EndTable();
\}
$BR
$BR
(b) 
\{
 BeginTable(center=>0).
     Row(['\(\displaystyle\int_{$lowerlimit3}^{$upperlimit3} ($c u+$d) \hskip 2pt du =\)',ans_rule,'\(\Bigg\vert\)',ans_rule(3).$BR.$BR.ans_rule(3),' = ',ans_rule(18),
     ],separation=>2).
   EndTable();
\}

END_TEXT
Context()->normalStrings;

$ans2 = Real("($m*($upperlimit2)^2/2 + $b*$upperlimit2) -($m*($lowerlimit2)^2/2 + $b*($lowerlimit2))");
$ans3 = Real("($c*($upperlimit3)^2/2 + $d*($upperlimit3)) -($c*($lowerlimit3)^2/2 + $d*($lowerlimit3))");
 

ANS(Formula("$m*x^2/2+$b*x")->cmp() );
ANS($upperlimit2->cmp() );
ANS($lowerlimit2->cmp() );
ANS($ans2->cmp() );


ANS(Formula("$c*u^2/2+$d*u")->cmp() );
ANS($upperlimit3->cmp() );
ANS($lowerlimit3->cmp() );
ANS($ans3->cmp() );


ENDDOCUMENT();




