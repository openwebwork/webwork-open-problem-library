########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "unionTables.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Fraction-NoDecimals");


$a = Compute(non_zero_random(-10,10));

$den = Compute(random(2,20));

$exponent = Fraction("-1","$den");
$derexponent = Fraction("-1-$den","$den");
$dercoefficient = Fraction("$a*$exponent");

Context("Numeric");
Context()->reduction->set('(-x)+y'=>0,'(-x)-y'=>0);
$c0 = Compute(non_zero_random(-9,9));
$c1 = Compute(non_zero_random(-9,9));
$c2 = Compute(non_zero_random(-9,9));
$u = Formula("$c2*x^2+$c1*x+$c0")->reduce;
$du = $u->D('x');
##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

If
 \{
 BeginTable(center=>0).
     Row(['$SPACE $SPACE $SPACE\(\displaystyle f(x) = \frac{$a}{\sqrt [$den]{\left( $u\right)}} = $a\left( $u\right)\)',ans_rule(2).$BR.$BR.$BR,
     ],separation=>2).
   EndTable();
\}
$BR
$BR
then by the chain rule,
\{
 BeginTable(center=>0).
     Row(['$SPACE $SPACE $SPACE\(\displaystyle f^{\prime}(x) = \)',ans_rule(2),'\(\Big(\)',ans_rule(10),'\(\Big)\)',ans_rule(2).$BR.$BR.$BR,'\(\Big(\)',ans_rule(10),'\(\Big)\)',
     ],separation=>2).
   EndTable();
\}
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS($exponent->cmp() );
ANS($dercoefficient->cmp() );
ANS($u->cmp() );
ANS($derexponent->cmp() );
ANS($du->cmp() );
ENDDOCUMENT();        
