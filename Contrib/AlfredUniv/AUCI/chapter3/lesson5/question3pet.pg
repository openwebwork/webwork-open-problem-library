  "MathObjects.pl",
  "PGgraphmacros.pl",
  "Alfredmacros.pl",
  "PGcourse.pl"
);
mathjaxmode();
#####################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 0;

#####################################################################

$a = random(1,10,1);
$c = random(1,5,1);

$b = 2* $c;
$d = ($c)**2 + $a;

$ans = Compute("$c");

###############################################################
Context()->texStrings;

BEGIN_TEXT
For what value of the constant \(c\) is the function \(f\) continuous on the interval \((-\infty, \infty)?\)  (HINT: The two pieces of the graph must connect at \(c\).)
\[
f(x) = \begin{cases}
x^2-$a, &x \le c\\
$b x - $d, &x > c\\
\end{cases}
\]
$SPACE $SPACE $SPACE \(c = \) \{ans_rule(20)\}
END_TEXT

Context()->normalStrings;

#####################################################################

ANS($ans->cmp());

