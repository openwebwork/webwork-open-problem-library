#  Answers
#
#
ANS($conjugate->cmp());
ANS($conjugate->cmp);

ANS($FOIL1->cmp()); 
ANS($FOIL2->cmp());
ANS($FOIL3->cmp());
ANS($FOIL2->cmp());
ANS($FOIL3->cmp());
ANS($FOIL4->cmp());
ANS($conjugate->cmp);

ANS($DQden->cmp());
ANS($conjugate->cmp);

ANS(Compute("1")->cmp);
ANS($conjugate->cmp);

ANS($fprimea->cmp);
