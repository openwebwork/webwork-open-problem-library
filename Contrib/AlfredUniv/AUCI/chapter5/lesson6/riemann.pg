# Load whatever macros you need for the problem
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
## Show partial correct answers
$showPartialCorrectAnswers = 1;

## Display the problem information
TEXT(beginproblem());


## Function definition
$k = Compute(non_zero_random(0.5,0.9,0.1));
$f = Formula("e^($k*x)");

###############################################
### Compute the Riemann Sums
$a = Compute(random(-3,3,.25));
$n = Compute(random(4,6));
$deltax = Compute(random(.5,2,.25));
$b = $a + $n*$deltax;

$left = Compute(0);
$midpoint = Compute(0);
$mi = $a + $deltax/2;
$xi = $a;
my @leftrectangles = ();
my @rightrectangles = ();
my @midrectangles = ();
for (my $i = 0;$i<$n;$i++){    
    $midpoint = $midpoint + $f->eval(x=>$mi);
    $left = $left + $f->eval(x=>$xi);
    push(@leftrectangles,$f->eval(x=>$xi));
    push(@midrectangles,$f->eval(x=>$mi));
    $xi = $xi + $deltax;
    $mi = $mi + $deltax;
    push(@rightrectangles,$f->eval(x=>$xi));
}

$right = $left - ($f->eval(x=>$a))+($f->eval(x=>$b));
$right = $deltax*$right;
$left = $deltax*$left;

$trap = ($left+$right)/2;

$midpoint = $midpoint*$deltax;

$simp = (2*$midpoint + $trap)/3;

Context()->texStrings;
BEGIN_TEXT
Estimate \(\int_{$a}^{$b} $f dx\) using \($n\) divisions and 
$BR
END_TEXT

###### LEFT
BEGIN_TEXT
\(L_{$n}\) = \{ans_rule(3)\}\(\Big(\)
END_TEXT
ANS($deltax->cmp() );

for (my $i = 0;$i<$n;$i++){
BEGIN_TEXT
\{ans_rule(6)\}
END_TEXT
ANS(Compute("$leftrectangles[$i]")->cmp() );
}
BEGIN_TEXT
\(\Big) = \) \{ans_rule(60)\}
END_TEXT
ANS($left->cmp);

###### RIGHT
BEGIN_TEXT
$BR
\(R_{$n}\) = \{ans_rule(3)\}\(\Big(\)
END_TEXT
ANS($deltax->cmp() );

for (my $i = 0;$i<$n;$i++){
BEGIN_TEXT
\{ans_rule(6)\}
END_TEXT
ANS(Compute("$rightrectangles[$i]")->cmp() );
}
BEGIN_TEXT
\(\Big) = \) \{ans_rule(60)\}
END_TEXT
ANS($right->cmp);

###### MIDPOINT
BEGIN_TEXT
$BR
\(M_{$n}\) = \{ans_rule(3)\}\(\Big(\)
END_TEXT
ANS($deltax->cmp() );

for (my $i = 0;$i<$n;$i++){
BEGIN_TEXT
\{ans_rule(6)\}
END_TEXT
ANS(Compute("$midrectangles[$i]")->cmp() );
}
BEGIN_TEXT
\(\Big) = \) \{ans_rule(60)\}
END_TEXT
ANS($midpoint->cmp);

