DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
Context("Numeric");
Context()->variables->add(t=>"Real", u=>"Real");

$showPartialCorrectAnswers = 1;

$a = random(3,8,1);
$b = random(-10,-1,1);
$c = random(3,8,1);
$d = random(-10,-1,1);
$f = Formula("e^($a*t)");
$g = Formula("$a*e^($b*x)");
$h = Formula("$d*e^($c*u^($a))");
$F = Formula("e^($a*x^2 + $c*x)");
$df = $f->D('t');
$dg = $g->D('x');
$dh = $h->D('u');
$dF = $F->D('x');

Context()->texStrings;
BEGIN_TEXT
$BR
(a)  If \(f(t) = $f\), then \(f^\prime(t) = \) \{ans_rule(35) \}.
$BR
$BR
(b)  If \(g(x) = $g\), then \(g^\prime(x) = \) \{ans_rule(35) \}.
$BR
$BR
(c)  If \(h(u) = $h\), then \(h^\prime(u) = \) \{ans_rule(35) \}.
$BR
$BR
(d)  If \(F(x) = $F\), then \(F^\prime(x) = \) \{ans_rule(35) \}. 
END_TEXT
Context()->normalStrings;
ANS($df->cmp());
ANS($dg->cmp());
ANS($dh->cmp());
ANS($dF->cmp());

ENDDOCUMENT();



