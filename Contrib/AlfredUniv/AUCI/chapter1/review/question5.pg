##DESCRIPTION
##  Algebra problem: true or false for inequality 
##ENDDESCRIPTION

##KEYWORDS('velocity', 'displacement')

## DBsubject('Calculus')
## DBchapter('Applications of Differentiation')
## DBsection('Rectilinear Motion')
## Date('6/6/2012')
## Author('Darwyn Cook')
## Institution('Alfred University')
## TitleText1('AUCI')
## EditionText1('')
## AuthorText1('Joseph Petrillo')
## Section1('1.5')
## Problem1('4')

########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserNumberWithUnits.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 0;

##############################################################
#
#  Setup
#
#
Context("Numeric");
Context()->variables->add(t=>'Real');
Context()->reduction->set('(-x)+y'=>0,'(-x)-y'=>0);

$v = Compute(random(-99,-19));
$s0 = Compute(non_zero_random(-9,9));
$t = Compute(non_zero_random(1,9));

$s = Formula("$v*t+$s0")->reduce;

$velocity = NumberWithUnits("$v","ft/s");
$speed = NumberWithUnits("-$v","ft/s");
$acceleration = NumberWithUnits("0","ft/s^2");

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
$BR
${BITALIC} (Include \{helpLink("units")\} with your answers.) $EITALIC
$BR
$BR
If the position of an object is given by \(s(t) = $s\) feet, then at \(t = $t\) seconds,
$BR
$BR
(a) the velocity of the object is \{ans_rule\},
$BR
$BR
(b) the speed of the object is \{ans_rule\}, and
$BR
$BR
(c) the acceleration of the object is \{ans_rule\}.
$BR
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
ANS($velocity->cmp);
ANS($speed->cmp);
ANS($acceleration->cmp);

ENDDOCUMENT();        
