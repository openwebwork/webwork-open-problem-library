DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a = Compute(random(2,20));
$b = Compute(random(2,20));
$c = Compute(random(2,20));
$d = Compute(random(2,20));

if ($d == $c){$d++;};

$twoc = Compute("2*$c");
$csquared = Compute("($c)^2");

@f = ("x^2\sqrt{x+$a}","\cos($c x)","\frac{\ln^{$b}(x)}{x}","\sqrt[$c]{e^{$d x}}","\cos^{$a}(x)\sin(x)","\frac{2x+$twoc}{x^2+$twoc x + $csquared}");
@correct = ("\(x+$a\)","\($c x\)","\(\ln(x)\)","\(\frac{$d x}{$c}\)","\(\cos(x)\)","\(x^2+$twoc x + $csquared\)");
@incorrect = ("\($d x\)","\(\sin(x)\)","\(\cos($c x)\)","\(2x+$twoc\)");

@u = (@correct,@incorrect);

@slice = NchooseK($#u+1,$#u+1);
@uscrambled = @u[@slice]; 

Context()->texStrings;
BEGIN_TEXT
(${BITALIC}Notice that you have a limited number of attempts.${EITALIC})
$BR
$BR
END_TEXT


for($i = 0;$i <= $#f;$i++){
$mc = new_multiple_choice();
$mc->qa(
"For the integral \(\int $f[$i] dx\), which ${BITALIC}u${EITALIC}-substitution should you perform to simplify the integrand? 
$BR
$BR
\(u = ...\)", 
"$u[$i]"
);
$mc->makeLast(@uscrambled);

Context()->texStrings;
BEGIN_TEXT
\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}
$BR
END_TEXT
Context()->normalStrings;

ANS( radio_cmp( $mc->correct_ans() ) );
};

ENDDOCUMENT();        # This should be the last executable line in the problem.
