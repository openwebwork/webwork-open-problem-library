## Author('Darwyn Cook')
## Institution('Alfred University')
## DBsubject('Calculus')
## DBchapter('Infinite Sequences and Series')
## DBsection('Sigma Notation')                     
## AuthorText1('Petrillo')
## TitleText1('AUCI')
## EditionText1('1')
## Section1('8.1')
## Problem1('')
## KEYWORDS('calculus' 'sigma' 'sum' 'series')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
Context()->flags->set(reduceConstants=>0);
Context()->variables->are(k=>"Real");
Context()->reduction->set('(-x)+y'=>0,'(-x)-y'=>0);

$initial = Compute(random(10,20));
$final = Compute($initial+5);

$a = Compute(non_zero_random(-9,9));
$b = Compute(non_zero_random(-9,9));

if($a == 1){$a++;};
if($a == -1){$a--;};
if($b == 1){$b++;};
if($b == -1){$b--;};

$f = Formula("$a*k+$b")->reduce;
$a0 = $f->substitute(k=>"$initial");
$a1 = $f->substitute(k=>"$initial+1");
$a2 = $f->substitute(k=>"$initial+2");
$a3 = $f->substitute(k=>"$initial+3");
$a4 = $f->substitute(k=>"$initial+4");
$a5 = $f->substitute(k=>"$initial+5");

$sum = Compute("$a0+$a1+$a2+$a3+$a4+$a5");

Context()->texStrings;
BEGIN_TEXT
\(\displaystyle\sum_{k=$initial}^{$final} $f \)
$BR
$BR
\(=\) \{ans_rule(5)\} + \{ans_rule(5)\} + \{ans_rule(5)\} + \{ans_rule(5)\} +\{ans_rule(5)\} +\{ans_rule(5)\} 
$BR
$BR
\(=\) \{ans_rule(10)\}
END_TEXT
Context()->normalStrings;

ANS($a0->cmp() );
ANS($a1->cmp() );
ANS($a2->cmp() );
ANS($a3->cmp() );
ANS($a4->cmp() );
ANS($a5->cmp() );

ANS($sum->cmp() );




ENDDOCUMENT();        # This should be the last executable line in the problem.
