## Author('Darwyn Cook')
## Institution('Alfred University')
## DBsubject('Calculus')
## DBchapter('Infinite Sequences and Series')
## DBsection('Sigma Notation')                     
## AuthorText1('Petrillo')
## TitleText1('AUCI')
## EditionText1('1')
## Section1('8.1')
## Problem1('')
## KEYWORDS('calculus' 'sigma' 'sum' 'series')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",         
           "PGanswermacros.pl",
           "MathObjects.pl",
           "unionTables.pl",
);

TEXT(beginproblem());
Context()->flags->set(reduceConstants=>0);
Context()->variables->are(k=>"Real");
Context()->reduction->set('(-x)+y'=>0,'(-x)-y'=>0);

$final = Compute(random(40,60));

$f = Formula("k^3")->reduce;

$a0 = $f->substitute(k=>"-2");
$a1 = $f->substitute(k=>"-1");
$a2 = $f->substitute(k=>"0");

$sum = Compute("($final*($final+1)/2)^2+$a0+$a1+$a2");
Context()->texStrings;
BEGIN_TEXT
\{BeginTable(center=>0).
     Row(['\(\displaystyle\sum_{k=-2}^{$final} $f = \)',    
    ans_rule(1),'+',ans_rule(1),'+',ans_rule(1),'+',ans_rule(1).$BR.'\(\sum\)'.$BR.'k=1',ans_rule(4),
     ],
separation=>2).
EndTable()
\}
\{BeginTable(center=>0).
  Row(['\(\hskip 27pt =\)',ans_rule(3),'\(+\)','\(\Big(\)'.ans_rule(1).'\(\Big)^2 \Big(\)'.ans_rule(1).'\(\Big)^2\)'. $BR.'------------------------------'.$BR.'\(\hskip 38pt 4\)','',],separation=>2).
EndTable()
\}
\{BeginTable(center=>0).
 Row(['\(\hskip 27pt =\)',ans_rule(30),],separation=>2).
EndTable()
\}

END_TEXT
Context()->normalStrings;

ANS($a0->cmp() );
ANS($a1->cmp() );
ANS($a2->cmp() );
ANS($final->cmp() );
ANS($f->cmp() );

ANS(Compute("$a0+$a1+$a2")->cmp() );
ANS($final->cmp() );
ANS(Compute("$final+1")->cmp() );

ANS($sum->cmp() );




ENDDOCUMENT();        # This should be the last executable line in the problem.
