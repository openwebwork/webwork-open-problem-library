DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"MathObjects.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"parserFormulaUpToConstant.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,7,1);
$b = random(2.25,7.25,.5);
$c = random(2,9,1);
$g = Formula("cos($b*x)");
$dg = $g->D('x');
$intg = FormulaUpToConstant("(1/$b)*sin($b*x)");

Context()->texStrings;
BEGIN_TEXT
Evaluate each integral. Assume that \(x\)  and \(t\) are measured in radians.
$BR$BR
(a)  \(\displaystyle\int $g dx = \) \{ans_rule(30) \}
END_TEXT
Context()->normalStrings;

ANS($intg->cmp() );


$pi = arccos(-1);
$a = random(2,8,1);
$coeff = 1 / $a;
$soln = $coeff * 2;

TEXT(EV2(<<EOT));
$BR
$BR 
(b) \(\displaystyle \int_{0}^{\pi /$a} \sin ($a t) dt = \) \{ans_rule( 30) \} 
$BR
EOT

$ans = $soln;
ANS(num_cmp($ans));


ENDDOCUMENT();        # This should be the last executable line in the problem.

