DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$f = Formula("sin(x)");
$df = $f->D('x');
$g = Formula("cos(x)");
$dg = $g->D('x');


Context()->texStrings;
BEGIN_TEXT
Complete the derivative and integral formulas.
Assume that \(x\)  is measured in radians.
$BR
$BR
(a)  \(\displaystyle \frac{d}{dx}\left($f\right) =  \) \{ans_rule(10) \}

END_TEXT

ANS($df->cmp() );


Context()->texStrings;
BEGIN_TEXT
$BR
$BR
(b) \( \displaystyle\frac{d}{dx}\left($g\right) =  \) \{ans_rule(10) \}
END_TEXT
Context()->normalStrings;

ANS($dg->cmp() );


$intf = FormulaUpToConstant("-cos(x)");

Context()->texStrings;
BEGIN_TEXT
$BR
$BR
(c) \(\displaystyle\int $f dx = \) \{ans_rule(10) \}
END_TEXT
Context()->normalStrings;

ANS($intf->cmp() );

$intg = FormulaUpToConstant("sin(x)");

Context()->texStrings;
BEGIN_TEXT
$BR
$BR
(d)  \(\displaystyle\int $g dx = \) \{ans_rule(10) \}
END_TEXT
Context()->normalStrings;

ANS($intg->cmp() );

