Context()->flags->set(reduceConstants=>0);
## Function definition
@denominators = ("2","3","4","6");
$den = Compute(non_zero_random(0,3));
$f = Formula("sin(pi/$denominators[$den]*x)");
$F = Formula("-$denominators[$den]/pi*cos(pi/$denominators[$den]*x)");

###############################################
### Compute the Riemann Sums

$a = non_zero_random(-3,3,.25);
$n = random(4,5);
# We don't want deltax = 2k*den/n for any k, that would put the integral over a full period of sin that leads to some unfortunate incorrect choices being marked correct.
$deltax = Compute(random(.25,1.75,.25));
while ((($n*$deltax)/($den)%2 == 0)||($deltax == 1)){
      $deltax = $deltax + 0.25;
};

$b = $a + $n*$deltax;

$Fa = $F->substitute(x=>"$a");
$Fb = $F->substitute(x=>"$b");


$left = 0;
$midpoint = 0;
$mi = $a + $deltax/2;
$xi = $a;
my @leftrectangles = ();
my @rightrectangles = ();
my @midrectangles = ();
for (my $i = 0;$i<$n;$i++){    
    $midpoint = $midpoint + Compute($f->substitute(x=>"$mi"));
    $left = $left + Compute($f->substitute(x=>"$xi"));
    push(@leftrectangles,Compute($f->substitute(x=>"$xi")));
    push(@midrectangles,Compute($f->substitute(x=>"$mi")));
    $xi = $xi + $deltax;
    $mi = $mi + $deltax;
    push(@rightrectangles,Compute($f->substitute(x=>"$xi")));
}

$right = $left - Compute($f->substitute(x=>"$a"))+Compute($f->substitute(x=>"$b"));
$right = $deltax*$right;
$left = $deltax*$left;

$trap = ($left+$right)/2;

$midpoint = $midpoint*$deltax;

$simp = (2*$midpoint + $trap)/3;

Context()->texStrings;
