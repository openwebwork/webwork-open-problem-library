ANS($fdeltax->cmp);
ANS($f->cmp);

ANS($sinx->cmp);
ANS($cosx->cmp);
ANS($f->cmp);

ANS(Formula("cos(deltax)")->cmp() );
ANS(Compute("1")->cmp() );
