TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context()->variables->add(k=>"Real");

$ak = Formula("(k+1)x^(k+3)");
$derivative = $ak->D('x');

Context()->texStrings;
BEGIN_TEXT
If  \(y = \sum_{k=0}^\infty $ak\) then \(y^\prime = \sum_{k=0}^\infty \) \{$derivative->ans_rule(30)\} 

END_TEXT
Context()->normalStrings;
ANS($derivative->cmp() );

