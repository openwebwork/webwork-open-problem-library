DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserFunction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Numeric");
Context()->functions->add(
  step => {
    class => 'Parser::Legacy::Numeric',
    perl => 'Parser::Legacy::Numeric::do_step'
  },
);

$a = random(0,5);
$c = random(3,8);
$b = $a+$c;

$hump = Formula("step(x-$a)-step(x-$b)");
$f = Formula("(x^2-$c)*$hump");

$x1 = random(-4,-1);
$x2 = random($a+1,$b-1);
$x3 = random(12,20);

$y1 = $f->eval(x=>"$x1");
$y2 = $f->eval(x=>"$x2");
$y3 = $f->eval(x=>"$x3");
$j = $hump->eval(x=>"$x2");
Context()->texStrings;
BEGIN_TEXT
Let \(f =(x^2 - $c)(u(x-$a)-u(x-$b))\). Compute 
$BR
$BR
\(f($x1) = \) \{$y1->ans_rule(10)\}
$BR
$BR
\(f($x2) = \) \{$y2->ans_rule(10)\}
$BR
$BR
\(f($x3) = \)\{$y3->ans_rule(10)\}
END_TEXT
Context()->normalStrings;
ANS($y1->cmp());
ANS($y2->cmp());
ANS($y3->cmp());
ENDDOCUMENT();        # This should be the last executable line in the problem.
