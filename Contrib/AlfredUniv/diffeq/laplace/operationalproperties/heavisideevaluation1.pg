DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserFunction.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Numeric");
Context()->functions->add(
  step => {
    class => 'Parser::Legacy::Numeric',
    perl => 'Parser::Legacy::Numeric::do_step'
  },
);

$a = random(0,9);
$c = random(3,8);
$b = $a+$c;

$hump = Formula("step(x-$a)");
$f = Formula("2^($c*x)*$hump");

$x1 = random(-8,-1);
$x2 = $a;
$x3 = $b;

$y1 = $f->eval(x=>$x1);
$y2 = $f->eval(x=>$x2);
$y3 = $f->eval(x=>$x3);

Context()->texStrings;
BEGIN_TEXT
Let \(f =2^{$c x}u(x-$a)\). Compute 
$BR
\(f($x1) = \) \{$y1->ans_rule(10)\}
$BR
$BR
\(f($x2) = \) \{$y2->ans_rule(10)\}
$BR
$BR
\(f($x3) = \) \{$y3->ans_rule(10)\}
END_TEXT
Context()->normalStrings;
ANS($y1->cmp());
ANS($y2->cmp());
ANS($y3->cmp());
ENDDOCUMENT();        # This should be the last executable line in the problem.
