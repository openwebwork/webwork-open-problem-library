DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "answerHints.pl",
  "PGcourse.pl"
);


Context()->variables->{namePattern} = qr/[a-z][a-z0-9_]*'*/i;
Context()->variables->are("Y"=>"Real","y"=>"Real","y'"=>"Real","y''"=>"Real","t"=>"Real","s"=>"Real","m"=>"Real","a"=>"Real");
$showPartialCorrectAnswers = 1;

##############################################################################
##
## Problem and Answer Set Up
##
##############################################################################
##
## Table of Laplace transforms
##
$n = random(1,9);
$fact = 1;
for($i=1;$i<=$n;$i++){$fact = $fact*$i;};

## table has the format f, numerator of F, denominator of F
@Table = ([Formula("1"),Formula("1"),Formula("s")],[Formula("t^$n"),Formula("$fact"),Formula("s^($n+1)")],[Formula("e^(m*t)"),Formula("1"),Formula("s-m")],
[Formula("cos(a*t)"),Formula("s"),Formula("a^2+s^2")],
[Formula("sin(a*t)"),Formula("a"),Formula("a^2+s^2")],
[Formula("sinh(a*t)"),Formula("-a"),Formula("a^2-s^2")],
[Formula("cosh(a*t)"),Formula("s"),Formula("s^2-a^2")]) ;


$numformulas = @Table;

###############################################################################
##
## Begin problem setup
##

$a = non_zero_random(-5,5);
$b = non_zero_random(-5,5);
$c = non_zero_random(-5,5);
$y0 = non_zero_random(-9,9);
$y1= non_zero_random(-9,9);
$minusone = $numformulas - 1;
$num = random(0,$minusone);

$diffeqnlhs = Compute("$a*y''+$b*y'+$c*y")->reduce('(-x)+y'=>0,'(-x)-y'=>0);
$diffeqnrhs = $Table[$num][0];

$P = $Table[$num][1];
$Q = $Table[$num][2];
$laplacelhs = Formula("-$a*s*$y0-$a*$y1-$b*$y0+($a*s^2+$b*s+$c)*Y");
$laplacerhs = Formula("$P/$Q");

$Y = Formula("($P+$Q*($a*s*$y0+$a*$y1+$b*$y0))/(($a*s^2+$b*s+$c)*$Q)")->reduce;

TEXT(beginproblem());

Context()->texStrings;
BEGIN_TEXT
Transform the differential equation 
\[$diffeqnlhs=$diffeqnrhs\]
\[y(0)=$y0\]
\[y^\prime(0)=$y1\]
into an algebraic equation by taking the Laplace transform of each side.
$BR
$BCENTER
\{$laplacelhs->ans_rule(40)\} \(=\) \{$laplacerhs->ans_rule\} 
$ECENTER
$BR 
Therefore
$BR
\(Y =\) \{$Y->ans_rule\}

END_TEXT
Context()->normalStrings;
ANS($laplacelhs->cmp());
ANS($laplacerhs->cmp());
ANS($Y->cmp());
ENDDOCUMENT();
