DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "Alfredmacros.pl",
  "unionTables.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric");
Context()->variables->are(t=>"Real",s=>"Real",Y=>"Real");
Context()->reduction->set('(-x)+y'=>0,'(-x)-y'=>0);

$a = Compute(non_zero_random(-10,10));
$y0 = Compute(non_zero_random(-10,10));

$lhs = Formula("-$a*$y0+($a*s-1)*Y");
$rhs = Formula("0");

$Ynum = Formula("$y0");
$Yden = Formula("1/$a");

$y = Formula("$y0*e^(t/$a)");

Context()->texStrings;
BEGIN_TEXT
Take the Laplace transform of the IVP
$BR
 \($a\frac{dy}{dt}-y=0, y(0) = $y0\) 
$BR
Use \(Y\) for the Laplace transform of \(y\), (not \(Y(s)\)).
$BR
\{$lhs->ans_rule(10)\} = \{$rhs->ans_rule(15)\}
$BR
$BR
So 
\{ BeginTable(center=>0).
      Row(['\(Y = \)','\(\hskip 5pt\)'.ans_rule(3).$BR."-----------------".$BR."s - ".ans_rule(3)],separation=>1).
   EndTable();
\}
$BR
$BR
and \(y(t) = \) \{$y->ans_rule\}
END_TEXT
Context()->normalStrings;
ANS($lhs->cmp());
ANS($rhs->cmp());
ANS($Ynum->cmp());
ANS($Yden->cmp());
ANS($y->cmp());
ENDDOCUMENT();        # This should be the last executable line in the problem.
