DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   "PGcourse.pl",      # Customization file for the course
   "PGchoicemacros.pl",
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$heat = 0;
$wave = 1;
$laplace = 2;

$correct = $heat;
@therest = ($heat,$wave,$laplace);
splice(@therest,$correct,1);

$PDE[$heat] = "\(\displaystyle k\frac{\partial^2 u}{\partial x^2} = \frac{\partial u}{\partial t}, 0<x<L, t>0\)$BR"; 
$PDE[$wave] = "\(\displaystyle\alpha^2\frac{\partial^2 u}{\partial x^2} = \frac{\partial^2 u}{\partial t^2}, 0<x<L, t>0\)$BR";
$PDE[$laplace] = "\(\displaystyle\frac{\partial^2 u}{\partial x^2} +\frac{\partial^2 u}{\partial y^2}=0,0<x<a,0<y<b\)$BR";

$boundary[$heat] = 
"\( 
\begin{aligned} 
u(0,t) &= 0 &u(L,t) &= 0, &t > 0\\
u(x,0) & = f(x),&& &0 < y < b\\
&&&&\\
&&&&\\
\end{aligned}\)";

$boundary[$wave] = 
"\( 
\begin{aligned} 
u(0,t) &= 0 &u(L,t) &= 0, &t > 0\\
u(x,0) & = f(x),&\frac{\partial u}{\partial t}\Bigg\vert_{t=0}  &= 0, &0 < y < b\\
&&&&\\
&&&&\\
\end{aligned}\)";

$boundary[$laplace] = "\( 
\begin{aligned} 
\frac{\partial u}{\partial x}\Bigg\vert_{x=0} & = 0, 
&\frac{\partial u}{\partial x}\Bigg\vert_{x=a}  &= 0, &0 < y < b\\
u(x,0) &= 0, &u(x,b) &= f(x), &0 < x < a\\
&&&&\\
&&&&\\
\end{aligned}\)";

$de = new_multiple_choice();
$de->qa(
"Partial Differential Equation", 
$PDE[$correct]
);
$de->extra(
$PDE[$therest[0]],
$PDE[$therest[1]],
);

$boundary = new_multiple_choice();
$boundary->qa(
"Boundary/Initial Conditions", 
$boundary[$correct],
);
$boundary->extra(
$boundary[$therest[0]],
$boundary[$therest[1]],
);


##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
A thin rectangular plate coincides with the region defined by \(0\leq x\leq a,0\leq y\leq b\). The left end and the bottom plate of the plate are insulated. The top of the plate is held at temperature zero, and the right end of the plate is held at temperature f(y).
$BR
Choose the PDE and boundary/initial conditions that model this scenario.
$BR
$BR
\{ $de->print_q() \}
$BR
\{ $de->print_a() \}
$BR
\{ $boundary->print_q() \}
$BR
\{ $boundary->print_a() \}
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

$showPartialCorrectAnswers = 0;

ANS( radio_cmp( $de->correct_ans() ) );
ANS( radio_cmp( $boundary->correct_ans() ) );
ENDDOCUMENT();        
