# Fn
ANS(Formula("$F*sin(n*pi*x/$L)")->cmp);
ANS($Fn->cmp);

#Find u_n
ANS(Formula("(n*pi/$L)^2*un+un'")->cmp);
ANS(Formula("(n*pi/$L)^2*un+un'")->cmp);

ANS($un->cmp);
ANS($un0->cmp);

#solve for c_n
ANS(Compute("$IV*sin(n*pi*x/$L)")->cmp);
ANS($solvecn->cmp);

ANS($cn->cmp);

