## Problem1('1')


DOCUMENT();      

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserVectorUtils.pl",
"parserParametricLine.pl",
"PGcourse.pl",
);

TEXT( beginproblem() );

Context("Vector");
Context()->variables->are(t=>"Real");

#
#  Points on the line
#
$P = non_zero_point3D();
$Q = $P + non_zero_point3D();

# 
#  Times, vectors, and lines
#
$t0 = random(1,4);
$t1 = $t0 + random(1,8);
$v = Vector(($Q-$P)/($t1-$t0));
$r = Formula("$P+(t-$t0)*$v");

Context()->texStrings;
BEGIN_TEXT
Find a vector parametric equation \(\vec{r}(t)\) for the line through the points \( P = $P \) at time t = $t0 and \( Q = $Q \) at time t = $t1.
$BR
$BR
\( \vec{r}(t) = \) \{ans_rule(40)\}
END_TEXT
Context()->normalStrings;

$showPartialCorrectAnswers = 1;

ANS($r->cmp() );

COMMENT('');
ENDDOCUMENT();
