DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "Alfredmacros.pl",
  "PGcourse.pl"
);


TEXT(&beginproblem);
$showPartialCorrectAnswers = 0;

$x1 = non_zero_random(-10,10,.5);
$x2 = non_zero_random(-10,10,.5);
$x3 = non_zero_random(-10,10,.5);
$x4 = non_zero_random(-10,10,.5);
$x5 = non_zero_random(-10,10,.5);
$x6 = non_zero_random(-10,10,.5);

$y1 = random(1,10,.1);
$y2 = random(1,10,.1);
$y3 = random(1,10,.1);
$y4 = random(1,10,.1);
$y5 = random(1,10,.1);
$y6 = random(1,10,.1);

$r1 = ($x1**2 + $y1**2)**.5 ;
$r2 = ($x2**2 + $y2**2)**.5 ;
$r3 = ($x3**2 + $y3**2)**.5 ;
$r4 = ($x4**2 + $y4**2)**.5 ;
$r5 = ($x5**2 + $y5**2)**.5 ;
$r6 = ($x6**2 + $y6**2)**.5 ;

$t1 = &inversetrig($x1, $y1);
$t2 = &inversetrig($x2, $y2);
$t3 = &inversetrig($x3, $y3);
$t4 = &inversetrig($x4, $y4);
$t5 = &inversetrig($x5, $y5);
$t6 = &inversetrig($x6, $y6);

## $t2 = arctan ($y2/$x2) ;
## $t3 = arctan ($y3/$x3) ;
## $t4 = arctan ($y4/$x4) ;
## $t5 = arctan ($y5/$x5) ;
## $t6 = arctan ($y6/$x6) ;

$questStr1 =EV2(  '\( ( \{spf($r1, "%4.4f")\} , \{spf($t1,"%4.4f") \} ) \)');
$ansStr1 = EV2( " \(  ( $x1 , $y1 )  \)");

$questStr2 =EV2(  '\( ( \{spf($r2, "%4.4f")\} , \{spf($t2,"%4.4f") \} ) \)');
$ansStr2 = EV2( " \(  ( $x2 , $y2 ) \)");

$questStr3 =EV2(  '\( ( \{spf($r3, "%4.4f")\} , \{spf($t3,"%4.4f") \} ) \)');
$ansStr3 = EV2( " \(  ( $x3 , $y3 )  \)");

$questStr4 =EV2(  '\( ( \{spf($r4, "%4.4f")\} , \{spf($t4,"%4.4f") \} ) \)');
$ansStr4 = EV2( " \(  ( $x4 , $y4 )  \)");

$questStr5 =EV2(  '\( ( \{spf($r5, "%4.4f")\} , \{spf($t5,"%4.4f") \} ) \)');
$ansStr5 = EV2( " \(  ( $x5 , $y5 )  \)");

$questStr6 =EV2(  '\( ( \{spf($r6, "%4.4f")\} , \{spf($t6,"%4.4f") \} ) \)');
$ansStr6 = EV2( " \(  ( $x6 , $y6 )  \)");

@questions =( $questStr1,$questStr2,$questStr3,$questStr4, $questStr5, $questStr6);
@answers =( $ansStr1,$ansStr2,$ansStr3,$ansStr4, $ansStr5, $ansStr6);

# Now randomize the questions:
@slice = &NchooseK(6,6);
@shuffle = &shuffle(scalar(@slice));

TEXT(EV2(<<EOT));
For each set of Polar coordinates, match the equivalent Cartesian coordinates.$BR
EOT
TEXT(
&match_questions_list(@questions[@slice]),
&OL(@answers[@slice[@shuffle]])
);
&ANS( str_cmp( [ @ALPHABET[&invert(@shuffle)] ]  ) );
     ##the correct answers are obtained by applying
     ##the inverse (adjoint) permutation to the captions.

ENDDOCUMENT();        # This should be the last executable line in the problem.

