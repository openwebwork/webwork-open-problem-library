           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl");
 
## Show partial correct answers
$showPartialCorrectAnswers = 1;
## Display the problem information
TEXT(beginproblem());

## Function definition
$c = random(1,8);
$f = Formula("abs($c-x)");

###############################################
### Compute the Riemann Sums
$a = random(-8,8);
$n = random(4,6);
$deltax = random(.5,2,.5);
$b = $a + $n*$deltax;

$left = 0;
$midpoint = 0;
$mi = $a + $deltax/2;
for ($i = 0;$i<$n;$i++){
$xi = $a + $i*$deltax;
$midpoint = $midpoint + $f->eval(x=>$mi);
$left = $left + $f->eval(x=>$xi);
push(@row_1,"\($mi\)");
push(@row_2,"\($xi\)");
push(@row_3,"\($midpoint\)");
push(@row_4,"\($left\)");
$mi = $mi + $deltax;
}

$right = $left - ($f->eval(x=>$a))+($f->eval(x=>$b));
$right = $deltax*$right;
$left = $deltax*$left;

$trap = ($left+$right)/2;

$midpoint = $midpoint*$deltax;

$simp = (2*$midpoint + $trap)/3;

Context()->texStrings;
BEGIN_TEXT
Estimate \(\int_{$a}^{$b} $f dx\) using \(\Delta x\) = $deltax and 
$BR
Left Endpoint Method \{$left->ans_rule()\}
$BR
Right Endpoint Method \{$right->ans_rule()\}
$BR
END_TEXT
#Trapezoid Method \{$trap->ans_rule()\}
#$BR
#Midpoint Method \{$midpoint->ans_rule()\}
#$BR
#Simpson's Method \{$simp->ans_rule()\}

Context()->normalStrings;
ANS($left->cmp());
ANS($right->cmp());
