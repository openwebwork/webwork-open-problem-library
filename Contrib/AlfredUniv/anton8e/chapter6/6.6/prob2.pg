DOCUMENT();

# Load the macro file to create graphs.
loadMacros(
  "PGstandard.pl",
  "PGgraphmacros.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

# Load whatever macros you need for the problem
 
## Show partial correct answers
$showPartialCorrectAnswers = 1;
## Display the problem information
TEXT(beginproblem());

## Function definition
$a0 = non_zero_random(-10,10);
$F= Formula("$a0*cos(x)")->reduce;
$f = Compute($F->D('x'))->reduce;
###############################################
### Compute the Riemann Sums
$a = Compute("pi/4");
$n = random(4,6);
$num = Compute(random(1,3));
$deltax = Compute($num*pi/4);
$bnum = Compute("1+$n*$num");
$b = Compute("$bnum*pi/4");

$left = 0;
$midpoint = 0;
$mi = $a + $deltax/2;
for ($i = 0;$i<$n;$i++){
$xi = $a + $i*$deltax;
$midpoint = $midpoint + $f->eval(x=>$mi);
$left = $left + $f->eval(x=>$xi);
push(@row_1,"\($mi\)");
push(@row_2,"\($xi\)");
push(@row_3,"\($midpoint\)");
push(@row_4,"\($left\)");
$mi = $mi + $deltax;
}

$right = $left - ($f->eval(x=>$a))+($f->eval(x=>$b));
$right = $deltax*$right;
$left = $deltax*$left;

$trap = ($left+$right)/2;

$midpoint = $midpoint*$deltax;

$simp = (2*$midpoint + $trap)/3;

$actual = $F->eval(x=>$b)-$F->eval(x=>$a);

Context()->texStrings;
BEGIN_TEXT
Estimate \(\int_{\frac{\pi}{4}}^{\frac{$bnum \pi}{4}} $f dx\) using n = $n divisions. Then
$BR
\(\Delta x\) = \{$deltax->ans_rule()\} 
$BR
Left Endpoint Method = \{$left->ans_rule()\}
$BR
Right Endpoint Method = \{$right->ans_rule()\}
$BR
Midpoint Method = \{$midpoint->ans_rule()\}
$BR
Actual value of the integral = \{$actual->ans_rule()\}
END_TEXT
Context()->normalStrings;
ANS($deltax->cmp());
ANS($left->cmp());
ANS($right->cmp());
ANS($midpoint->cmp);
ANS($actual->cmp);
ENDDOCUMENT();
