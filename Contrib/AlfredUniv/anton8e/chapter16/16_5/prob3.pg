DOCUMENT();

# Load whatever macros you need for the problem
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGauxiliaryFunctions.pl",
           "MathObjects.pl",
           "unionTables.pl",
           "Alfredmacros.pl",
          );
##################################
## Begin the code section
$showPartialCorrectAnswers = 1;
Context("Numeric")->variables->are(x=>'Real',y=>'Real',z=>'Real',theta=>'Real',phi=>'Real');
Context()->variables->set(theta => {TeX=>'\theta'},phi => {TeX=>'\phi'});


## The parameterized surface
$rho = random(2,6);
$rho_squared = $rho**2;
$temp = $rho - 1;
$height = random(1,$temp);
$x = Formula("$rho*cos(theta)*sin(phi)")->reduce;
$y = Formula("$rho*sin(theta)*sin(phi)")->reduce;
$z = Formula("$rho*cos(phi)")->reduce;
$thetamin = Real(0);
$thetamax = Real(2*pi);
$phimin = Real(0);
$phimax = Real(arccos($height/$rho));

# the function f
$f = Formula("(x^2+y^2)*z")->reduce;
$fthetaphi = $f->substitute(x=>$x,y=>$y,z=>$z)->reduce;

# The volume element
Context("Vector");
Context("Vector")->flags->set(showCoordinateHints=>1);
Context("Vector")->variables->are(x=>'Real',y=>'Real',theta=>'Real',phi=>'Real');
$r = Vector("$x","$y","$z");
$ru = $r->D('theta')->reduce;
$rv = $r->D('phi')->reduce;
$prod = Vector("$ru >< $rv");
$prod = Formula("<-$rho_squared*cos(theta)*(sin(phi))^2, -$rho_squared*sin(theta)*(sin(phi))^2,-$rho_squared*sin(phi)*cos(phi)>");

Context()->texStrings;
BEGIN_TEXT 
Find the surface integral \(\int\limits_\sigma\!\!\int f(x,y,z)dS\) where \(f = $f\) and \(\sigma\) is the sphere \(x^2+y^2+z^2 = $rho_squared\) above \(z = $height\).
$BR
Parameterize the surface integral 
$BR
\{ BeginTable(center=>0).
      Row(['\(\displaystyle\int\limits_\sigma\!\!\int f(x,y,z)dS = \int\limits_R\!\!\int f\left(x(u,v),y(u,v),z(u,v)\right)\left\Vert\frac{\partial r}{\partial u}\times\frac{\partial r}{\partial v}\right\Vert dA= \)', tableintegral(width=>1),tableintegral(width=>1),ans_rule(20),'\(\Bigg\Vert\)',ans_rule(15),'\(\Bigg\Vert\hskip 3pt d\theta d\phi \)'],separation=>1).
   EndTable();
\}
$BR
$BR
$BBOLD Note: $EBOLD For \(\theta\) type theta and for \(\phi\) type phi. 
END_TEXT
Context()->normalStrings;
ANS($phimin->cmp);
ANS($phimax->cmp);
ANS($thetamin->cmp);
ANS($thetamax->cmp);
ANS($fthetaphi->cmp);
ANS($prod->cmp);

ENDDOCUMENT();
