$BR
$BR
\{ BeginTable(center=>0).
      Row(['\(\displaystyle\oint\limits_C (x-y) dx+ydy = \)', tableintegral(width=>1),tableintegral(width=>7),ans_rule(15),'\(dxdy =\)',ans_rule(20)],separation=>1).
