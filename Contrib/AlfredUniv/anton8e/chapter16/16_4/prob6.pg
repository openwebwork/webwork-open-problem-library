ANS(Compute("$r")->cmp);
ANS(Compute("0")->cmp);
ANS(Formula("sqrt($r^2-y^2)")->cmp);
ANS(Formula("0")->cmp);
# \int
ANS(Compute("0")->cmp);
ANS(Compute("$r")->cmp);
ANS(Formula("0")->cmp);
ANS(Compute("0")->cmp);

ANS(String("conservative")->cmp() );
