DOCUMENT();

# Load whatever macros you need for the problem
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl"
          );
 
## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;
TEXT(beginproblem());
Context()->variables->
are(x=>'Real',y=>'Real');

$a = random(2,6);
$b = random(2,6);
$c = random(2,6);
$d = random(2,6);
$m = random(2,6);
$n = random(2,6);
$P = Point($a,$b);
$Q = Point($c,$d);

## set up the stream function and the vector field.
$psi = Formula("x^($n+1)/($n+1)-y^($m+1)/($m+1)");
Context("Vector");
Context()->flags->set(ijk=>1);
$f = -($psi->D('y')->reduce);
$g = $psi->D('x')->reduce;
$F = Vector("$f","$g")->reduce;

$psiP = $psi->eval(x=>$a,y=>$b);
$psiQ = $psi->eval(x=>$c,y=>$d);
$flux = Real($psiQ-$psiP);
Context()->texStrings;
BEGIN_TEXT
Find the stream function for the vector field \(F = $F\): \{ans_rule(20)\}
$BR
If C is a curve connecting the point P = \($P\) the point Q = \($Q\), then the flux across C is given by: \{ans_rule(20)\} 
END_TEXT
Context()->normalStrings;
ANS($psi->cmp);
ANS($flux->cmp);

ENDDOCUMENT();
