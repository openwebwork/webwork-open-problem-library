## Integrals
#S1
$S1 = Compute("-$c*($yu-$yl)($xu-$xl)*$zl");
#S2
$S2 = Compute("$c*($yu-$yl)($xu-$xl)*$zu");

#S3
$S3 = Compute("-$a*($yu-$yl)($zu-$zl)*$xl");
#S4
$S4 = Compute("$a*($yu-$yl)($zu-$zl)*$xu");

#S5
$S5 = Compute("-$b*($xu-$xl)($zu-$zl)*$yl");
#S6
$S6 = Compute("$b*($xu-$xl)($zu-$zl)*$yu");


$Flux = Compute("$S1+$S2+$S3+$S4+$S5+$S6");

ANS($S1->cmp());
ANS($S2->cmp());
ANS($S3->cmp());
