DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-7,7,1);
$b = random(2,9);
$f  = Formula("$a*$b^x");
$fx = $f->D('x');
Context()->texStrings;
BEGIN_TEXT
If \( f(x) =  $f \)
$BR
\( f'( x ) \)=\{$fx->ans_rule(48) \}
END_TEXT
Context()->normalStrings;
ANS($fx->cmp);

