DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context()->variables->add(y=>'Real');
$a1 = non_zero_random(-7,7,1);
$b1 = non_zero_random(-12,12,1);
$c1 = non_zero_random(-40,40,1);
$n1 = random(2,5,1);
$n2 = random($n1,7,1);
$n3 = random($n2,50,1);
$f  = Formula("$a1*y^{-$n3}+$b1*y^{$n2}+$c1*y^{$n1/$n2}")->reduce;
$fx = $f->D('y');
Context()->texStrings;
BEGIN_TEXT
If \( f(y) =  $a1 \frac{1}{y^{$n3}}+$b1 y^{$n2} +\sqrt[$n2]{y^{$n1}} \)
$BR
\( f'( y ) \)=\{$fx->ans_rule(48) \}
END_TEXT
Context()->normalStrings;
ANS($fx->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
