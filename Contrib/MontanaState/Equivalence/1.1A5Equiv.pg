############################
# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 1;

$a = random(1, 8, 1);
$b = $a*$a;
$c = random(-3, 6, 1);
$d = random(1, 4, 1);
$e = $d*$c;
$f = $d*$d*$d;

$radio1 = new_multiple_choice();
$radio1->qa("Are the following sentences equivalent?","Equivalent");
$radio1->extra("Not equivalent");
$radio1->makeLast("Not equivalent");

$radio2 = new_multiple_choice();
$radio2->qa("Are the following sentences equivalent?","Not equivalent");
$radio2->extra("Equivalent");
$radio2->makeLast("Not equivalent");


############################
# Main Text

Context()->texStrings;
BEGIN_TEXT

\{$radio2->print_q()\} $BR 
\( x = $a, \:\:\:\: x^{2} = $b \)
\{$radio2->print_a()\} 

$BR $BR
\{$radio1->print_q()\} $BR 
\( x = $c, \:\:\:\: $d x = $e \)
\{$radio1->print_a()\} 

$BR $BR
\{$radio1->print_q()\} $BR 
\( x < $d, \:\:\:\: x^{3} < $f \)
\{$radio2->print_a()\} 

$BR $BR
\{$radio2->print_q()\} $BR 
\( a = b, \:\:\:\: ca = cb \)
\{$radio2->print_a()\} 


END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

ANS(radio_cmp($radio2->correct_ans()));
ANS(radio_cmp($radio1->correct_ans()));
ANS(radio_cmp($radio1->correct_ans()));
ANS(radio_cmp($radio2->correct_ans()));

############################

Context()->normalStrings;

ENDDOCUMENT();