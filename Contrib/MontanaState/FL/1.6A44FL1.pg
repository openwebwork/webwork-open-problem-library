$a = random(3,8,1);
$b = random(2,11,1);
$c = random(1, 4, 1);
$d = random(1, 4, 1);
$e = $a + $c;
$f = $a - $d;
#$g = $b - $c;
#$h = $b + $e

TEXT(beginproblem());

Context("Numeric");

$radio1 = RadioButtons(
  ["True","False"],
  "True", # correct answer
);

$radio2 = RadioButtons(
  ["True","False"],
  "False", # correct answer
);

$radio3 = RadioButtons(
  ["True","False"],
  "False", # correct answer
);

$radio4 = RadioButtons(
  ["True","False"],
  "True", # correct answer
);


BEGIN_TEXT
If \( x < $a\), then \(x \leq $a \)$BR
\{ $radio1->buttons() \}
$BR
$BR
If \( x \leq $b\), then \(x < $b \)$BR
\{ $radio2->buttons() \}
$BR
$BR

If \( $a < x \), then \($a < x < $e\)$BR
\{ $radio3->buttons() \}
$BR
$BR
If \($f < x < $a\), then \(x < $a \)$BR
\{ $radio4->buttons() \}

END_TEXT
Context()->normalStrings;

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS( $radio1->cmp());
