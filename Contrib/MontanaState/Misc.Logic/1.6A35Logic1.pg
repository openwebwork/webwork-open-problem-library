# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl"
);

TEXT(beginproblem());

############################
# Setup

$showPartialCorrectAnswers = 1;

$radio1 = new_multiple_choice();
$radio1->qa("True or False?","True");
$radio1->makeLast("False");

$radio2 = new_multiple_choice();
$radio2->qa("True or False?","False");
$radio2->extra("True");
$radio2->makeLast("False");

############################
# Main Text

Context()->texStrings;
BEGIN_TEXT

\{$radio1->print_q()\} $BR 
\( A \: \) and \( \: B \Rightarrow A \)
\{$radio1->print_a()\} 

$BR 
\{$radio2->print_q()\} $BR 
\( A \: \) or \( \: B \Rightarrow A \)
\{$radio2->print_a()\} 

$BR $BR
\{$radio2->print_q()\} $BR 
\( A \Rightarrow A \: \) and \( \: B \)
\{$radio2->print_a()\} 

$BR $BR
\{$radio1->print_q()\} $BR 
\( A \Rightarrow A \: \) or \( \: B \)
\{$radio1->print_a()\} 


END_TEXT
Context()->normalStrings;

############################
# Answer Evaluation

ANS(radio_cmp($radio1->correct_ans()));
ANS(radio_cmp($radio2->correct_ans()));
ANS(radio_cmp($radio2->correct_ans()));
ANS(radio_cmp($radio1->correct_ans()));

