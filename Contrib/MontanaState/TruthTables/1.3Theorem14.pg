#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextTF.pl",
  "PGcourse.pl",
);

#####################################################################

TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

#####################################################################

Context("TF");

$b = "\; not \; A";

$ansb1 = Compute("F");
$ansb2 = Compute("F");
$ansb3 = Compute("T");
$ansb4 = Compute("T");

$c = "\; (not\;  A) \; or \; B";

$ansc1 = Compute("T");
$ansc2 = Compute("F");
$ansc3 = Compute("T");
$ansc4 = Compute("T");

$d = "\; A \Rightarrow B";

$ansd1 = Compute("T");
$ansd2 = Compute("F");
$ansd3 = Compute("T");
$ansd4 = Compute("T");


$radio = new_multiple_choice();
$radio->qa("Are the two statements equivalent?","Yes, the columns are identical.");
$radio->extra("No, the columns are not identical.",
		    "No, the rows are not identical.",
		    "Yes, the rows are identical.");



#####################################################################

Context()->texStrings;
BEGIN_TEXT
Complete the following truth table below by typing "T" for true and "F" for false.
$BCENTER
\{ begintable(5) \}
\{ row( "\(\quad A\quad\)", "\(\quad B\quad\)", "\($b\)", "\($c\)", "\($d\)")\}
\{ row( "$SPACE T", "$SPACE T", ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ row( "$SPACE T", "$SPACE F", ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ row( "$SPACE F", "$SPACE T", ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ row( "$SPACE F", "$SPACE F", ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ endtable() \}
$ECENTER
$BR
\{$radio->print_q()\}
\{$radio->print_a()\}

END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ansb1->cmp() );
ANS( $ansc1->cmp() );
ANS( $ansd1->cmp() );
ANS( $ansb2->cmp() );
ANS( $ansc2->cmp() );
ANS( $ansd2->cmp() );
ANS( $ansb3->cmp() );
ANS( $ansc3->cmp() );
ANS( $ansd3->cmp() );
ANS( $ansb4->cmp() );
ANS( $ansc4->cmp() );
ANS( $ansd4->cmp() );

ANS(radio_cmp($radio->correct_ans()));

ENDDOCUMENT();        # This should be the last executable line in the problem.