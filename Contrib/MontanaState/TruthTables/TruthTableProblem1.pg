#####################################################################
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextTF.pl",
  "PGcourse.pl",
);

#####################################################################

TEXT(beginproblem());

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

#####################################################################

Context("TF");

$a = random(1,3,1);

if ($a==1){
$b = "\; not A";

$ansb1 = Compute("F");
$ansb2 = Compute("F");
$ansb3 = Compute("T");
$ansb4 = Compute("T");

$c = "\; (not A) or B";

$ansc1 = Compute("T");
$ansc2 = Compute("F");
$ansc3 = Compute("T");
$ansc4 = Compute("T");

$d = "\;((not A) or B) \Rightarrow B";

$ansd1 = Compute("T");
$ansd2 = Compute("T");
$ansd3 = Compute("T");
$ansd4 = Compute("F");
}

#********************************
if ($a==2){
$b = "not B";

$ansb1 = Compute("F");
$ansb2 = Compute("T");
$ansb3 = Compute("F");
$ansb4 = Compute("T");

$c = "A \: and \; not B";

$ansc1 = Compute("F");
$ansc2 = Compute("T");
$ansc3 = Compute("F");
$ansc4 = Compute("F");

$d = "(A \; and \; not B) \Rightarrow B";

$ansd1 = Compute("T");
$ansd2 = Compute("F");
$ansd3 = Compute("T");
$ansd4 = Compute("T");
}

#*********************************
if ($a==3){
$b = "\; not A";

$ansb1 = Compute("F");
$ansb2 = Compute("F");
$ansb3 = Compute("T");
$ansb4 = Compute("T");

$c = "\;(not A) \;or B";

$ansc1 = Compute("T");
$ansc2 = Compute("F");
$ansc3 = Compute("T");
$ansc4 = Compute("T");

$d = "((not A) \:or \;B) \Rightarrow B";

$ansd1 = Compute("T");
$ansd2 = Compute("T");
$ansd3 = Compute("T");
$ansd4 = Compute("F");

}
#####################################################################

Context()->texStrings;
BEGIN_TEXT
Complete the following truth table below by typing "T" for true and "F" for false.
$BCENTER
\{ begintable(5) \}
\{ row( "\(\: A\quad\)", "\(\: B\quad\)", "\($b\)", "\($c\)", "\($d\)")\}
\{ row( "$SPACE T", "$SPACE T", ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ row( "$SPACE T", "$SPACE F", ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ row( "$SPACE F", "$SPACE T", ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ row( "$SPACE F", "$SPACE F", ans_rule(3), ans_rule(3), ans_rule(3)  )\}
\{ endtable() \}
$ECENTER
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ansb1->cmp() );
ANS( $ansc1->cmp() );
ANS( $ansd1->cmp() );
ANS( $ansb2->cmp() );
ANS( $ansc2->cmp() );
ANS( $ansd2->cmp() );
ANS( $ansb3->cmp() );
ANS( $ansc3->cmp() );
ANS( $ansd3->cmp() );
ANS( $ansb4->cmp() );
ANS( $ansc4->cmp() );
ANS( $ansd4->cmp() );

ENDDOCUMENT();        # This should be the last executable line in the problem.