############################
# Setup

$showPartialCorrectAnswers = 1;

$a = random(1, 5, 1);
$b = random(7, 12, 1);
$c = random(-3, 4, 1);

$radio1 = new_multiple_choice();
$radio1->qa("Is the following grammatically correct?","Correct");
