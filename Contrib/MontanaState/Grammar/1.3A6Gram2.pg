# Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl"
);

$a = random(1, 5, 1);
$b = $a + 1;
$c = $a + 3;

TEXT(beginproblem());

$mc = new_checkbox_multiple_choice();

$mc -> qa ("Select all the sentences that are open sentences.", 
"\( x > $a \)$BR",
"\( x = a \)$BR",
"\( x/2 = c\)$BR"
);

$mc -> extra(
"\( x/2 = c \: \) iff \( \: x = 2c \)$BR",
"\( $a + 1 = $b\)$BR", 
"\( x-a = b \: \) iff \( \: x = b+a \)$BR"
);
$mc->makeLast("None of the above");

BEGIN_TEXT

\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}

END_TEXT

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );

ENDDOCUMENT();