## DESCRIPTION
## Compute arbitrary powers of a simple 2x2 matrix. The powers repeat in a cycle of period 3.
## ENDDESCRIPTION

## DBsubject('Linear algebra')
## DBchapter('Matrices')
## DBsection('Matrix algebra')
## Date('October 12, 2019')
## Author('Nathaniel Johnston')
## Institution('Mount Allison University')
## TitleText1('Introduction to Linear and Matrix Algebra')
## EditionText1('1')
## AuthorText1('Nathaniel Johnston')
## Section1('1.3: Matrices and Matrix Operations')
## Problem1('')
## KEYWORDS('matrices','matrix multiplication')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "PGchoicemacros.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context('Matrix')->variables->are(n=>'Real');

$flg = random(1,4);
if($flg == 1) {
    $A = Matrix([[0,1],[-1,-1]]);
} elsif($flg == 2) {
    $A = Matrix([[-1,-1],[1,0]]);
} elsif($flg == 3) {
    $A = Matrix([[-1/2,1/2],[-3/2,-1/2]]);
} else {
    $A = Matrix([[-1/2,-1/2],[3/2,-1/2]]);
}

$n = 3 * random(50,100);

$ans1 = $A * $A;
$ans2 = Matrix([1,0],[0,1]);
$ans3 = $A;
$ans4 = Matrix([1,0],[0,1]);

##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Compute the following powers of the matrix \( \displaystyle A = $A \).
$BR
$BR
\( \displaystyle A^2 \) = \{ $ans1->ans_array \}
$BR
\( \displaystyle A^3 \) = \{ $ans2->ans_array \}
$BR
\( \displaystyle A^4 \) = \{ $ans3->ans_array \}
$BR
\( \displaystyle A^{$n} \) = \{ $ans4->ans_array \} (Hint: Find a pattern.)
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

$showPartialCorrectAnswers = 1;

ANS( $ans1->cmp() );
ANS( $ans2->cmp() );
ANS( $ans3->cmp() );
ANS( $ans4->cmp() );

ENDDOCUMENT();
