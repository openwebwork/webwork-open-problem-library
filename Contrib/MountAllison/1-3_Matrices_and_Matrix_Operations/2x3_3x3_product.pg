## DESCRIPTION
## Compute the product of a 2x3 and a 3x3 matrix.
##   Both matrices will have small integer entries (between -2 and 4).
##   Neither of the matrices will be the zero matrix.
## ENDDESCRIPTION

## DBsubject('Linear algebra')
## DBchapter('Matrices')
## DBsection('Matrix algebra')
## Date('October 9, 2019')
## Author('Nathaniel Johnston')
## Institution('Mount Allison University')
## TitleText1('Introduction to Linear and Matrix Algebra')
## EditionText1('1')
## AuthorText1('Nathaniel Johnston')
## Section1('1.3: Matrices and Matrix Operations')
## Problem1('')
## KEYWORDS('matrices','matrix multiplication')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "PGchoicemacros.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Vector");

do {
    $a = random(-2,4);
    $b = random(-2,4);
    $c = random(-2,4);
    $d = random(-2,4);
    $e = random(-2,4);
    $f = random(-2,4);
    $A = Matrix([[$a,$b,$c],[$d,$e,$f]]);
} until ($a != 0 || $b != 0 || $c != 0 || $d != 0 || $e != 0 || $f != 0);

do {
    $a = random(-2,4);
    $b = random(-2,4);
    $c = random(-2,4);
    $d = random(-2,4);
    $e = random(-2,4);
    $f = random(-2,4);
    $g = random(-2,4);
    $h = random(-2,4);
    $i = random(-2,4);
    $B = Matrix([[$a,$b,$c],[$d,$e,$f],[$g,$h,$i]]);
} until ($a != 0 || $b != 0 || $c != 0 || $d != 0 || $e != 0 || $f != 0 || $g != 0 || $h != 0 || $i != 0);

$ans = $A * $B;

##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Compute \( \displaystyle AB \) if \( \displaystyle A = $A \) and \( \displaystyle B = $B \).
$BR
$BR
\( \displaystyle AB \) = \{ $ans->ans_array \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

ANS( $ans->cmp() );

ENDDOCUMENT();
