## DESCRIPTION
## Compute arbitrary powers of a simple 2x2 matrix.
## ENDDESCRIPTION

## DBsubject('Linear algebra')
## DBchapter('Matrices')
## DBsection('Matrix algebra')
## Date('October 12, 2019')
## Author('Nathaniel Johnston')
## Institution('Mount Allison University')
## TitleText1('Introduction to Linear and Matrix Algebra')
## EditionText1('1')
## AuthorText1('Nathaniel Johnston')
## Section1('1.3: Matrices and Matrix Operations')
## Problem1('')
## KEYWORDS('matrices','matrix multiplication')
## http://www.njohnston.ca/publications/introduction-to-linear-and-matrix-algebra/

##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "PGchoicemacros.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context('Matrix')->variables->are(n=>'Real');

$A = Matrix([[1,1],[0,1]]);

$ans1 = Matrix([1,2],[0,1]);
$ans2 = Matrix([1,3],[0,1]);
$ans3 = Matrix([1,"n"],[0,1]);

##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Sometimes matrix powers exhibit simple patters. Compute the following powers of the matrix \( \displaystyle A = $A \).
$BR
$BR
\( \displaystyle A^2 \) = \{ $ans1->ans_array \}
$BR
\( \displaystyle A^3 \) = \{ $ans2->ans_array \}
$BR
\( \displaystyle A^n \) = \{ $ans3->ans_array \} (your answer should be a formula depending on \( \displaystyle n \))
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

$showPartialCorrectAnswers = 1;

ANS( $ans1->cmp() );
ANS( $ans2->cmp() );
ANS( $ans3->cmp() );

ENDDOCUMENT();
