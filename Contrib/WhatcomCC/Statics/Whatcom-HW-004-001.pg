Context("Numeric");

#given
$w = random(100, 200, 5);
$F = random(200, 400, 5);
$a = random(2, 4, 0.2);
$b = random(5,8,0.2);
$c = random(2,4,.2);
$Mmax = $w*$b**2/2+$F*($b+$c);
$M = $Mmax*random(0.4,0.8,.01);

#computation 
$Bx = 0;
$Cx = 0; #roller;
$Cy = ($F*($b+$c)+$w*($b**2)/2-$M)/$b;
$By = $F+$w*$b-$Cy;

#set tolerance
Context()->flags->set(
tolerance=>.01);

