DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

##############################################################

Context("Numeric");
Context()->variables->add(y =>'Real',z =>'Real');

$a = random(2,8,1);

$ans = Compute("2*pi*($a*sin($a)+cos($a)-1)");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Evaluate the double integral
 \( 
\displaystyle \iint_D \cos\sqrt{x^2+y^2} dA,
\)
where \(D\) is the disc with center the origin and radius \($a,\) by changing to polar coordinates.
$PAR
Answer: \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;

##############################################################

ANS( $ans->cmp() );

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.
