);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

##############################################################

Context('Vector');
Context()->variables->are(s =>'Real', t =>'Real' );

$a = non_zero_random(-5,5,1);

$v = Vector("<$a^2,1>");
$mag = norm($v);

$ans = Compute("$mag");

##############################################################

Context()->texStrings;
BEGIN_TEXT
Find the maximum rate of change of \(f(s,t)= te^{st}\) at the point \((0,$a).\)
$PAR
Answer: \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;

##############################################################

ANS( $ans->cmp() );

