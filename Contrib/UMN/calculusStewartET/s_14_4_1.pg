## Problem1('1')
## KEYWORDS('calculus', 'partial derivatives', 'tangent planes', 'surface')

########################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "parserImplicitPlane.pl",
  "PGcourse.pl"
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

$a = random(2,6,1);
$b = random(2,6,1);
$c = random(2,4,1);

$d = Compute("$a- $b*($c)^2+ $c");

$x1 = Compute("-2*$b*($c)+1");
$y1 = Compute("-2*$a");

$ans = ImplicitPlane("$x1*(x-$c)+$y1*(y+1)-(z-$d)=0");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the (linear) equation of the tangent plane to the surface \(z=$a y^2 - $b x^2+ x\) at the point \(($c,-1,$d)\).
$PAR
Equation: \{ ans_rule(30) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS(($ans)->cmp());

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.
