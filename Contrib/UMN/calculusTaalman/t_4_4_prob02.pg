loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

#####################################################################

$showPartialCorrectAnswers = 0;

TEXT(beginproblem());

#####################################################################

Context("Numeric");

$a = random(2,6,1);
$b = random(3,5,1);
$c = random(8,12,1);

$ans = FormulaUpToConstant("$a*(x^6/6)+$c*(x^($b)/$b)+C");

#####################################################################

Context()->texStrings;
BEGIN_TEXT
Evaluate the indefinite integral
\[
\int \frac{$a x^6+$c x^{$b}}{x}   dx.
\]

Answer: \{ans_rule(30) \}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS( $ans->cmp() );

