$ans1 = Compute("e^(t^($a)-$b*t)($a*t^($a-1)-$b)");

#####################################################################
Context()->texStrings;
BEGIN_TEXT
Find the derivative of \(h(t) = e^{t^{$a}-$b t}.\)
$BR
$BR
Answer: \(h'(t) = \) \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;

#####################################################################

ANS($ans1->cmp());

