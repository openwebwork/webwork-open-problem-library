\[
\lim_{x \to \infty} \frac{\ln x}{\ln($a x + $b)}
\]
$PAR
Limit: \{ans_rule(20)\} $PAR
END_TEXT
Context()->normalStrings;

#####################################################################

ANS($ans->cmp());

