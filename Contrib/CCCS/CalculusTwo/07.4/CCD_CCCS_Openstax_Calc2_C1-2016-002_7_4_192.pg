[`\beta=`][_____________]{$beta},[@ AnswerFormatHelp("numbers") @]*
[`g(\theta)=`][_____________]{$integrand}[@ AnswerFormatHelp("formulas") @]*(Type in theta for [`\theta`]).
END_PGML

}

