$a=non_zero_random(0,10,0.5);
$b=non_zero_random(-10,10,0.5);
$c=non_zero_random(-10,10,0.5);
$f=Formula("{sqrt{$a + $b *x}-sqrt{$a +$c*x}}/{x}")->reduce;
$ans =($b-$c)/(2*sqrt($a));

###########################
