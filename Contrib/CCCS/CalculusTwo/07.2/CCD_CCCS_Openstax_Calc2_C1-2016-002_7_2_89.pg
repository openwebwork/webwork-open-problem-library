##formulas for x'(t) and y'(t)##
$xp_t = $x_t->D('t');
$yp_t = $y_t->D('t');

##formula for dy/dx##
$dy_dx =Formula("($yp_t)/($xp_t)")->reduce;

##derivative of $dy_dx with respect to t to find the second derivative 
$dy_dx_dt = $dy_dx->D('t');

##formula for d^(2)y/dx^(2) second derivative##
$d2y_dx2 =Formula("($dy_dx_dt)/($xp_t)")->reduce;

