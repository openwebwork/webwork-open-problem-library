TEXT(beginproblem());
$refreshCachedImages = 1;

###########################
#  Setup


Context()->variables->add(y=>"Real");
Context()->variables->add(C=>"Real");

$a=non_zero_random(-5,5);
$h=random(0,6);
$b=$a+$h;
$k=non_zero_random(-5,5);
$f1=Formula("$a+x")->reduce;
$f2=Formula("($b+x)(y+$k)")->reduce;
$answer=Formula("C*(x+$a)^($h)e^(x)-$k")->reduce;



###########################
#  Main text


BEGIN_PGML
Find the general solution to the differential equation

[``([$f1])y'=[$f2]``]


[``y=``][_______________________] [@ AnswerFormatHelp("formulas") @]*


Use the letter "C" for any constant of integration.

END_PGML
ANS($answer->cmp()->withPostFilter(AnswerHints( 
  Formula("(x+$a)^($h)e^(x+C)-$k") => ["You are close, try to simplify the exponential.", replaceMessage=>1],
)));


