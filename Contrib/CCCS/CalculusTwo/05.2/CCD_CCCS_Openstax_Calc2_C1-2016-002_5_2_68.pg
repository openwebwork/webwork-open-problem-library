#  Setup

$a = random(1,10,1);
$c=non_zero_random(-1,1,1);
## Set up for the alternating series, the choice of $c will determine if it begins with a positive or begins with a negative.
if($c==-1){
$a1=-$a;
$a2=$a;
$a3=-$a;
$a4=$a;
$a5=-$a;
$a6=$a;
$a7=-$a;
$f1=Formula("$a*(-1)^(n+1)");
$f2=Formula("$a*(-1)^(n)");
}
else{
$a1=$a;
$a2=-$a;
$a3=$a;
$a4=-$a;
$a5=$a;
$a6=-$a;
$a7=$a;
$f1=Formula("$a*(-1)^(n)");
$f2=Formula("$a*(-1)^(n+1)");
}


$f1->{test_points} = [[1],[2],[3],[4],[5],[6]];

$f2->{test_points} = [[1],[2],[3],[4],[5],[6]];
