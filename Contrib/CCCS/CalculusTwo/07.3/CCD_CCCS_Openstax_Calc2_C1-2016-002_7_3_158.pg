##PART 2##
##Parametric equations added to the grids## 

##  ( x_0(t)=$bcos(t), y_0(t)=$bsin(t) ),  0<= t <= 2pi ## INCORRECT PLOT##
 $x_0 = sub { my $t = shift();
    return $b*cos($t); };
  $y_0 = sub { my $t = shift();
    return $b*sin($t); };
  $f_0 = new Fun( $x_0, $y_0, $gr_0);
  $f_0->domain(0,6.2832);

##  ( x_1(t)=$acos(t), y_1(t)=$asin(t) ),  0<= t <= 2pi ## CORRECT PLOT##
 $x_1 = sub { my $t = shift();
    return $a*cos($t); };
  $y_1 = sub { my $t = shift();
    return $a*sin($t); };
  $f_1 = new Fun( $x_1, $y_1, $gr_1);
  $f_1->domain(0,6.2832);

##  ( x_2(t)=cos($bt), y_2(t)=sin($bt) ),  0<= t <= 2pi ## INCORRECT PLOT##
 $x_2 = sub { my $t = shift();
    return $b+cos($t); };
  $y_2 = sub { my $t = shift();
    return sin($b*$t); };
  $f_2 = new Fun( $x_2, $y_2, $gr_2);
  $f_2->domain(0,6.2832);

##  ( x_3(t)=$ccos(t), y_3(t)=$csin(t) ),  0<= t <= 2pi ## INCORRECT PLOT##
 $x_3 = sub { my $t = shift();
    return $c*cos($t); };
  $y_3 = sub { my $t = shift();
    return $c*sin($t); };
  $f_3 = new Fun( $x_3, $y_3, $gr_3);
  $f_3->domain(0,6.2832);

##Setting up correct answer for plot matching part
$popup = PopUp(
  ["?","A","B", "C", "D"], "C",
);

if ( $a == $sqrt2 ) {
$radio1 = RadioButtons([

"\( r=$b\)",

"\( r=\sqrt{2} \sec \theta\)",

"\( r=\sqrt{2}\)",

"\( r=-\sqrt{2} \sin \theta\)"],

"\( r=\sqrt{2}\)",

);
