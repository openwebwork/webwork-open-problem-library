###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl",,
"parserAssignment.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGgraphmacros.pl",
"parserPopUp.pl",
"PGcourse.pl",
"scaffold.pl",
"contextLimitedPoint.pl",
"parserRadioButtons.pl",
"weightedGrader.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

$refreshCaschedImages = 1;

##########################
#  Setup
Context("Numeric")->variables->are(t=>"Real");

##Grids for Parametric Plots##
$gr_0 = init_graph(-8,-8,8,8,
axes=>[0,0],
grid=>[8,8],
size=>[600,600]
);

$gr_1 = init_graph(-8,-8,8,8,
axes=>[0,0],
grid=>[8,8],
size=>[600,600]
);

$gr_2 = init_graph(-8,-8,8,8,
axes=>[0,0],
grid=>[8,8],
size=>[600,600]
);

$gr_3 = init_graph(-8,-8,8,8,
axes=>[0,0],
grid=>[8,8],
size=>[600,600]
);

##Random variables for changing parametric plots##
$a=list_random(-1,1); 
$b=list_random(4,6); 
$c=Compute("$b/2")->reduce;
$csquared=Compute("$c**2")->reduce;


####polar equation is either circle r=$bcos(t) if $a=1 or r=$bsin(t) if $a=-1 #####

if ( $a == -1 ) { 
##PART 1
$radio1 = RadioButtons([

"\( A\)",

"\( B\)",

"\( C\)",

"\( D\)"],

"\( C\)",

);

} else {

##PART 1
$radio1 = RadioButtons([

"\( A\)",

"\( B\)",

"\( C\)",

"\( D\)"],

"\( B\)",

);
}


##PART 2##
##Parametric equations added to the grids## 

##   ## INCORRECT PLOT##
 $x_0 = sub { my $t = shift();
    return $c+$c*cos($t); };
  $y_0 = sub { my $t = shift();
    return $c*sin($t); };
  $f_0 = new Fun( $x_0, $y_0, $gr_0);
  $f_0->domain(-8,8);

##  ## CORRECT PLOT##
 $x_1 = sub { my $t = shift();
    return $c*cos($t); };
  $y_1 = sub { my $t = shift();
    return $c+$c*sin($t); };
  $f_1 = new Fun( $x_1, $y_1, $gr_1);
  $f_1->domain(-8,8);

##   ##INCORRECT PLOT##
 $x_2 = sub { my $t = shift();
    return $c*cos($t); };
  $y_2 = sub { my $t = shift();
    return $c*sin($t); };
  $f_2 = new Fun( $x_2, $y_2, $gr_2);
  $f_2->domain(-8,8);

##   ## INCORRECT PLOT##
 $x_3 = sub { my $t = shift();
    return 3+$c*cos($t); };
  $y_3 = sub { my $t = shift();
    return $a+$c*sin($t); };
  $f_3 = new Fun( $x_3, $y_3, $gr_3);
  $f_3->domain(-8,8);

if ( $a == -1 ) {
##Setting up correct answer for plot matching part
$popup = PopUp(
  ["?","A","B", "C", "D"], "C",
);
} else {
##Setting up correct answer for plot matching part
$popup = PopUp(
  ["?","A","B", "C", "D"], "B",
);
}

#################################
##Main text##

####Conditional for changing the problem
if ( $a == -1 ) {
#################################

BEGIN_PGML
