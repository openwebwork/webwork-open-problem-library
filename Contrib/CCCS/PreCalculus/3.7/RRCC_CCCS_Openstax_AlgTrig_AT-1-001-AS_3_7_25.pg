#  Initialization

DOCUMENT();

loadMacros(
"PGgraphmacros.pl",
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
);

TEXT(beginproblem());


###########################
#  Setup
$refreshCachedImages=1;

$gr = init_graph(-5,-5,5,5,
axes=>[0,0],
grid=>[10,10],
size=>[400,400]
);

$m=non_zero_random(-2,2,1);
do {$a=non_zero_random(-3,3,1);} until ((-$a*$m) < 5) and ((-$a*$m)>-5);

add_functions($gr, "$m*(x-$a) for x in <-5,5> using color:blue and weight:2");

$refreshCachedImages=1;

$ans1=Formula("-$a*$m");
$ans2=Compute("$a");


###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Let the graph of \( f(x) \) be given below. Find the following.
$BR
$BR
$BCENTER
\{ image( insertGraph($gr), 
width=>300,height=>300,tex_size=>800 ) \}
$BR
$BR

(Click on graph to enlarge)

$BR
$BR
\( f(0) = \)  \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
\( f^{-1}(0) = \)  \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
$ECENTER
END_TEXT
Context()->normalStrings;


############################
#  Answer evaluation


install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($ans1->cmp()  );
ANS($ans2->cmp()  );


