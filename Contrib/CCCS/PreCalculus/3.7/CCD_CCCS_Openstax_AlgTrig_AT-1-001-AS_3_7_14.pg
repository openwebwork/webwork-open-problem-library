###########################
#  Setup

Context("Numeric");

$a = non_zero_random(2,9,1);

$f=Formula("(x-$a)^2")->reduce;

$f_inverse=Formula("sqrt(x)+$a");

Context("Interval");
$interval=Interval("[$a, infinity)");

$video = MODES(
