#  Initialization

DOCUMENT();

loadMacros(
"PGgraphmacros.pl",
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
);

TEXT(beginproblem());


###########################
#  Setup

$gr = init_graph(-.2,-.2,5,5,
axes=>[0,0],
grid=>[5,5],
size=>[400,400]
);


$a = random(0,2,.5);

add_functions($gr, "2*(-7+24*x - 25*x**2 + (35*x**3)/3 - (5*x**4)/2 + x**5/5)+$a for x in <-5,5> using color:blue and weight:2");

($gr->fn)[0]->steps(2000);

$refreshCachedImages=1;

Context("Numeric");
Context()->flags->set(
  tolerance => 0.15,
  tolType => "absolute",
);
$ans3= Compute(((2*(-7+24*4 - 25*4**2 + (35*4**3)/3 - (5*4**4)/2 + 4**5/5)+$a)-(2*(-7+24*1 - 25*1**2 + (35*1**3)/3 - (5*1**4)/2 + 1**5/5)+$a))/3);



###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Let the graph of \( y=f(x) \) be given below.
$BR
$BR
$BCENTER
\{ image( insertGraph($gr), 
width=>400,height=>400,tex_size=>800 ) \}
$BR
(Click on graph to enlarge)

$BR
$BR
Estimate the average rate of change for the graph above from \(x=1\) to \(x=4\). \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$ECENTER
END_TEXT
Context()->normalStrings;


############################
#  Answer evaluation


install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($ans3->cmp()  );


