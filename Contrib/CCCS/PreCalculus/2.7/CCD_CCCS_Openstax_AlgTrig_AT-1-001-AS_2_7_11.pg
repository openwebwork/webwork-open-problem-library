$b=random(-5,-1,1);
$c=random(1,8,1);
$d=random(6,10,1);
$e=random(-8,-1,1);
$f=random(-5,-2,1);


$rightint=(-($a*$b)-$c+$e)/($a-$d-$f);

Context("Interval");
Context()->flags->set("formatStudentAnswer"=>'parsed');
$intans = Compute("(-inf,$rightint)");

##############################################

TEXT(beginproblem());

BEGIN_PGML

