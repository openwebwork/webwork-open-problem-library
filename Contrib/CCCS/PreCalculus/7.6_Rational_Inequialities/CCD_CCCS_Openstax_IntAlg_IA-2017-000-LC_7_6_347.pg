#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
"contextFraction.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup

$a = random(1,2);  # different forms of problem

# Parameters

$u = random(3,6);
$v = random(5,9);
$w = random(1,$u - 1);

# Solutions
Context("Fraction-NoDecimals");

$c1 = $v;  # critical values where function changes sign
if ($a ==1) {
  $c2 = Fraction($w*$v, $w - $u);
  }
else {
  $c2 = Fraction(-$w*$v,-$w - $u);;
}

if ($a == 1) {
  # c2 is always less than c1 here  
  $x1 = Interval("($c2,$c1)");
  }
else {
  if ($c1 < $c2) {
    $min = $c1;
    $max = $c2;
    }
  else {
    $min = $c2;
    $max = $c1;
    }

  $x1 = Interval("($min,$max)");
  }


$video = MODES(
HTML=> 
'<iframe width="420" height="315" src="//www.youtube.com/embed/2RnS3fSHVV8"frameborder="0" allowfullscreen></iframe>', 
TeX =>
"An embedded YouTube video."
);

###########################
#  Main text
if ($a == 1) 
{
BEGIN_PGML

Solve the rational inequality.  Enter the answer in interval notation.

[`` \dfrac{{[$u]}x}{x - {[$v]}} < {[$w]} ``]

 [_______________]{$x1} [@ AnswerFormatHelp("numbers") @]*

[$video]*
END_PGML


