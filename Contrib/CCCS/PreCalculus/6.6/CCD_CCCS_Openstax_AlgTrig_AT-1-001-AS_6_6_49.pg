###########################
#  Setup

Context()->strings->add(
  "none"=>{},
  "no solution"=>{alias=>"none"}
);



# Parameters

$t = random(3,6);

$u = random(2,4);

$v = random(5,9);

do { $w = random(3,6); } until ($w != $t);

# Solution

$no_solutions = 0;
$x1 = ($u * $w - $t) / ($v * $w);
# $x1 = round(1000 * $x1) / 1000.0;
if ($u - $v * $x1 <= 0) {
  $no_solutions = 1;
  $x1 = "none";
}

