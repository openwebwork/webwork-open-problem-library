TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################
#  Setup

# Parameters

$t =list_random(-9, -4, -1, 1, 4, 9, 16, 25);  # value of x^2

$k = random(1,4);

$u = random(2,5);
$w = random(4,10);
$v = $t * $w + $k;

$C = $k * $u;

# Solution

if ($t < 0 ) {
  # no solutions
  $x1= List("none");
}
else {
  $x1 = sqrt($t);
  $x1 = Round(1000*$x1) / 1000.0;
  $x1 = List(-$x1, $x1);
}

Context()->strings->add(
  "none"=>{},
  "no solution"=>{alias=>"none"}
);

