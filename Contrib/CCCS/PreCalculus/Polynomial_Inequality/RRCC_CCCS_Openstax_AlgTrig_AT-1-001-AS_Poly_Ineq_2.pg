DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup
Context()->noreduce('(-x)-y','(-x)+y');

$a = random(-4,4,1);
$m = non_zero_random(-7,7,1);
$b = random(-4,4,1);
do {$c = random(-7,7,1);} until ($c != $m);
$d = $m*$a+$b-$c*$a; 


$f=Formula("$m*x+$b")->reduce;
$g=Formula("$c*x+$d")->reduce;


Context("Interval");
if($m>$c){$ans=Compute("(-infinity,$a]");} else{$ans=Compute("[$a,infinity)");}


###########################
#  Main text

BEGIN_PGML

Solve [`` [$f] \leq [$g] ``]. Enter the solution in interval notation.

[_______________]{$ans} [@ AnswerFormatHelp("intervals") @]*

END_PGML


