###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

###########################
#  Setup
Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');
Context()->variables->add(y => 'Real');

$k = non_zero_random(-9,9,1);
$r = random(1,7,1);
$r2 = ($r)**2;

$f = Formula("x^2+(y-$k)^2")->reduce;

Context("LimitedPoint");
$cen = Point("(0,$k)");


###########################
#  Main text

BEGIN_PGML
Find the center and radius of the following circle. Enter the center as an ordered pair. 
>>[`` [$f]=[$r2] ``]<<

+ center:  [______]{$cen} [@ AnswerFormatHelp("points") @]*

+ radius:   [___]{$r} [@ AnswerFormatHelp("numbers") @]*

END_PGML

