#  Setup
Context()->noreduce('(-x)-y','(-x)+y');
$gr = init_graph(-5,-10,5,10,
axes=>[0,0],
grid=>[10,20],
size=>[400,400]
);

$a = list_random(-4,4);
$b = non_zero_random(-2,2); 

add_functions($gr, "1/4*(x-$a)*(x-$b)^2 for x in <-5,5> using color:blue and weight:2");

$refreshCachedImages=1;

$ans1=Formula("1/4*(x-$a)*(x-$b)^2")->reduce;


