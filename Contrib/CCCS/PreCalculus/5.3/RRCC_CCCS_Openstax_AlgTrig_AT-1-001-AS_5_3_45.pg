###########################
#  Setup
Context("Numeric");

$a=non_zero_random(-10,-1, 1);
$b=non_zero_random(1,10, 1);
$c=non_zero_random(1,10, 1);

$f=Formula("((x-$b)^3)*(x-$c)")->reduce;
$y=$f->eval(x=>0);

Context("LimitedPoint");
$xint = List( Point("($b,0)"),Point("($c,0)"));
$yint = List( Point("(0,$y)") );

Context("Numeric");


###########################
#  Main text

