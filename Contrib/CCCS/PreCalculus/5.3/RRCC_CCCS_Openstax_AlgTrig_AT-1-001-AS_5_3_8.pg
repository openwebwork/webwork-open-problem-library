###########################
#  Setup
Context("Numeric");

$a=non_zero_random(-5,5,1);
$b=non_zero_random(-6,6,1);
do{$c=non_zero_random(-5,5,1);}until($b!=$c);

$f=Formula("$a*x")->reduce;
$g=Formula("(x-$b)^2*(x-$c)")->reduce;

Context("LimitedPoint");
$xint = List(Point("(0,0)"), Point("($b,0)"),Point("($c,0)"));

