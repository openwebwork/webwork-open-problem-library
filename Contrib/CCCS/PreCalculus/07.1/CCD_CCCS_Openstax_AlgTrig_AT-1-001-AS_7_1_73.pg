# Setup

Context("Numeric");


#  miles traveled
$m = random(2, 4, 0.5);

# revolutions
$rev = random(2000, 4000, 50);

$inchesTraveled = Compute ($m*12*5280);

$circumference = Compute( $inchesTraveled/$rev);



$ans1 = Compute ( $circumference/(2*pi));



Context()->functions->disable("SimpleTrig");


