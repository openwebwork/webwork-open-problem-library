#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

###########################

# Setup

Context("Numeric");
Context()->functions->enable("sqrt");
Context()->functions->disable("InverseTrig");
Context()->flags->set(
    formatStudentAnswer=>'parsed'
);

Parser::Number::NoDecimals;
Context()->variables->add(t => 'Real');
Context()->noreduce('(-x)-y','(-x)+y');

$showPartialCorrectAnswers = 1;

$a = random(1,4,1);
$f = Formula("$a*sin(2t)")->reduce;
$g = Formula("$a*cos(t)")->reduce;
$ans = Compute("pi/2, 3pi/2, pi/6, 5pi/6");
###########################
#  Main text

BEGIN_PGML
Find all exact solutions on the interval [`  [0, 2\pi) `]. If there is more than one answer, enter them as a comma separated list. 

[` [$f]=[$g] `]


[` t = `] [_______________________]{$ans} [@ AnswerFormatHelp("angles") @]*

END_PGML


