###########################
#  Initialization
DOCUMENT();       

loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"PGgraphmacros.pl",
"unionTables.pl",
"parserPopUp.pl",
);
       
TEXT(beginproblem());

$refreshCachedImages=1;


###########################
#  Setup

$a = non_zero_random(2,5,1);
do {$b = non_zero_random(2,5,1);} until ($b != $a);
$c = non_zero_random(2,5,1);
do {$d = non_zero_random(2,5,1);} until ($d != $c);

#building first graph
    $gr[0] = init_graph(-10,-10,10,10,
    axes=>[0,0],
    grid=>[20,20]
    );

    #adding function
    $xfunc1 = sub { my $t = shift();
        return $a*cos($t)*(1+sin($t)); }; 
    $yfunc1 = sub { my $t = shift();
        return $a*sin($t)*(1+sin($t)); };
    $fn1 = new Fun( $xfunc1, $yfunc1, $gr[0] );
    $fn1->domain(0,6.2832);
    $fn1->color('blue');
    $fn1->weight('2');

#building second graph
    $gr[1] = init_graph(-10,-10,10,10,
    axes=>[0,0],
    grid=>[20,20]
    );

    #adding function
    $xfunc1 = sub { my $t = shift();
        return $b*cos($t)*(1+sin($t)); }; 
    $yfunc1 = sub { my $t = shift();
        return $b*sin($t)*(1+sin($t)); };
    $fn1 = new Fun( $xfunc1, $yfunc1, $gr[1] );
    $fn1->domain(0,6.2832);
    $fn1->color('blue');
    $fn1->weight('2');

#building third graph
    $gr[2] = init_graph(-10,-10,10,10,
    axes=>[0,0],
    grid=>[20,20]
    );

    #adding function
    $xfunc1 = sub { my $t = shift();
        return $c*cos($t)*(1-sin($t)); }; 
    $yfunc1 = sub { my $t = shift();
        return $c*sin($t)*(1-sin($t)); };
    $fn1 = new Fun( $xfunc1, $yfunc1, $gr[2] );
    $fn1->domain(0,6.2832);
    $fn1->color('blue');
    $fn1->weight('2');

#building fourth graph
    $gr[3] = init_graph(-10,-10,10,10,
    axes=>[0,0],
    grid=>[20,20]
    );

    #adding function
    $xfunc1 = sub { my $t = shift();
        return $d*cos($t)*(1-sin($t)); }; 
    $yfunc1 = sub { my $t = shift();
        return $d*sin($t)*(1-sin($t)); };
    $fn1 = new Fun( $xfunc1, $yfunc1, $gr[3] );
    $fn1->domain(0,6.2832);
    $fn1->color('blue');
    $fn1->weight('2');

for $i (0..3) {
  plot_functions( $gr[$i]); 
  $fig[$i]=image(insertGraph($gr[$i]),
  width=>200,height=>200,tex_size=>450);
}

@eqn =("\( r = $a+$a\sin(\theta) \)",  "\( r = $b+$b\sin(\theta) \)", 
       "\( r = $c-$c\sin(\theta) \)", "\( r = $d-$d\sin(\theta) \)");

$k = random(0,3,1);

@perm = shuffle(4);
@fig = @fig[@perm];
@inv = invert(@perm);

@letter = ("A", "B", "C", "D");

$popup = PopUp(["?","A","B","C","D"], $letter[$inv[$k]]);
$popup2 = PopUp(["?","circle","cardioid","one-loop limacon","inner-loop limacon", "lemniscates", "rose curve"],"cardioid");

###########################
#  Main text

BEGIN_TEXT
Graph the polar equation $eqn[$k]. Identify which of the following is the graph and identify the name of the shape. 
$BR
$BR
$BCENTER
Graph:  
\{ $popup->menu() \}
Shape:
\{ $popup2->menu() \}
$BR
$BR
\{
BeginTable().
  AlignedRow([$fig[0],$fig[1]]).
  TableSpace(5,0).
  AlignedRow(["A","B"]).
  TableSpace(25,6).
  AlignedRow([$fig[2],$fig[3]]).
  TableSpace(5,0).
  AlignedRow(["C","D"]).
EndTable();
\}
$BR
(Click on a graph to enlarge it.)
$ECENTER
$BR
$BR
END_TEXT

$refreshCachedImages=1;
############################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;

ANS( $popup->cmp() );
ANS( $popup2->cmp() );
