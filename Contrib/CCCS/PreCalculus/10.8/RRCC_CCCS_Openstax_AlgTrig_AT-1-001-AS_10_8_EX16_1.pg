#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",

"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

###########################

# Setup
Context("Vector");

$a = non_zero_random(-9,9,1);
$b = non_zero_random(-9,9,1);
$c = non_zero_random(-9,9,1);
do{$d = non_zero_random(-9,9,1);}
until($a*$c+$b*$d != sqrt((($a)**2 + ($b)**2)*(($c)**2 + ($d)**2))); #to make the vectors non parallel vectors, so that the angle between the two is never zero for this problem.

$u = Vector($a,$b);
$v = Vector($c,$d);

$lu = norm($u);
$lv = norm($v);
$costheta = ($u.$v)/($lu*$lv);
$theta = arccos($costheta);

$ans = Compute("$theta");
###########################
#  Main text

BEGIN_PGML
Find the angle, [`\theta`], in radians between the vectors [`\mathbf{u}=[$u]`] and [`\mathbf{v}=[$v]`].

[` \theta = `] [_______________]{$ans} [@ helpLink("angles") @]*

END_PGML
