###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup
Context()->noreduce('(-x)-y','(-x)+y');

$b=non_zero_random(1,9);
$c=non_zero_random(1,9);
$f = Formula("abs(x - $b) - abs(x + $c)")->reduce;

$d=non_zero_random(-9,9);
$ans1=$f->eval(x=>$d);

$e=non_zero_random(-9,9);
$ans2=$f->eval(x=>$e);

Context()->variables->add(a=>"Real");
$ans3=Formula("abs(a - $b) - abs(a + $c)")->reduce;

Context()->variables->add(h=>"Real");
$ans4=Formula("abs((a + h) - $b) - abs((a + h) + $c)")->reduce;

$ans5=Formula("abs(-a - $b) - abs(-a + $c)")->reduce;

$ans6=Formula("-abs(a - $b) + abs(a + $c)")->reduce;
###########################
#  Main text

BEGIN_PGML
Evaluate [`f(x)=[$f]`] at each of the following values:

+ [`f([$d])=`] [_______________]{$ans1} [@ AnswerFormatHelp("numbers") @]*

+ [`f([$e])=`] [_______________]{$ans2} [@ AnswerFormatHelp("numbers") @]*

+ [`f(a)=`] [_______________]{$ans3} [@ AnswerFormatHelp("formulas") @]*

+ [`f(a+h)=`] [_______________]{$ans4} [@ AnswerFormatHelp("formulas") @]*

+ [`f(-a)=`] [_______________]{$ans5} [@ AnswerFormatHelp("formulas") @]*

+ [`-f(a)=`] [_______________]{$ans6} [@ AnswerFormatHelp("formulas") @]*

END_PGML


