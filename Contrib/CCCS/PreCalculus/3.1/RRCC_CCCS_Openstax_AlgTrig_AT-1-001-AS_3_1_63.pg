#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"parserPopUp.pl",
"niceTables.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


###########################
#  Setup

Context("Numeric");

$y1=random(1,4);
$y2=random(9,12);
$y3=random(11,15);
$x1=random(17,20);
$x2=random(13,16);
$x3=random(21,24);

$popup = PopUp(
  ["?","Yes, it's a function.","No, it's not a function."],
  "Yes, it's a function.",
);

###########################
#  Main text
loadMacros("niceTables.pl");

BEGIN_TEXT
$BCENTER
$BR
\{
LayoutTable(
  [
    ['\(x\)' , '$x1' ,'$x2', '$x3'],
    ['\(y\)' , '$y1' ,'$y2', '$y3'],
  ], 
   midrules => 1,
  align => '| c | c | c | c |',
  center => 0,
  allcellcss => 'font-family: Computer Modern; padding:10px; font-size:small; ',
);
\}
$ECENTER
$BR
END_TEXT

BEGIN_PGML

>>Does the relation represented in table form above represent [`y`] as a function of [`x`]?<<

>> [___________]{$popup} <<

END_PGML

