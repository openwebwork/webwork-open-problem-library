#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
"contextTrigDegrees.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("TrigDegrees");

$a = random(3.1,3.9,.1);
$b = random(4.1,4.9,1);
$C = random(35,45,1);

$x2 = $a**2+$b**2-2*$a*$b*cos($C);
$x = sqrt($x2);
$ans = Compute("$x");

Context()->flags->set(
  tolerance => 0.05,
  tolType => "absolute",
);
###########################
#  Main text

BEGIN_PGML

Find the length of side [` x `], where [` a = [$a]`], [`b = [$b]`], and [`C= [$C]^\circ`]. Round to the nearest tenth. 


END_PGML

$refreshCachedImages=1;
BEGIN_TEXT
$BR
$BCENTER
\{ image( "10_2_33.png", width=>300, height=>300,  
tex_size=>700, extra_html_tags=>'alt="Triangle with side x across from angle C. Also given sides a and b."' ) \}
$ECENTER
$BR
$BR
END_TEXT

BEGIN_PGML

 [` x = `] [_______________]{$ans} [@ AnswerFormatHelp("numbers") @]*

END_PGML


