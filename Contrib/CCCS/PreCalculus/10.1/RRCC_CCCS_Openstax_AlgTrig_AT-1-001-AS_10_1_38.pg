DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
"contextTrigDegrees.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("TrigDegrees");

$A = random(23,39,1);
$b = random(4,9,1);
$a = random(10,12,1);


$X = arcsin($b*sin($A)/$a);
$ans = Compute("$X");

Context()->flags->set(
  tolerance => 0.1,
  tolType => "absolute",
);
###########################
#  Main text

BEGIN_PGML

Find the measure of angle [` X `], where [` A = [$A]^\circ`], [`a = [$a]`], and [`b= [$b]`]. Round to the nearest tenth. 


END_PGML

