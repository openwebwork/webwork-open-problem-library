###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGgraphmacros.pl",
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
"parserPopUp.pl",
"PGML.pl",
);

TEXT(beginproblem());


###########################
#  Setup
$a=random(1,3);
$b=random(1,3);

$c=random(-3,-1);
$d=random(-3,-1);

$e=random(-3,3);

$gr = init_graph(-4,-4,4,4,
axes=>[0,0],
grid=>[8,8],
size=>[400,400]
);

$gr->stamps( closed_circle($a,$b,'blue') );
$gr->lb( new Label($a+0.2,$b+0.2,'E',
    'black','center','middle'));

$gr->stamps( closed_circle($c,$d,'blue') );
$gr->lb( new Label($c+0.2,$d+0.2,'B',
    'black','center','middle'));

$gr->stamps( closed_circle($e,0,'blue') );
$gr->lb( new Label($e+0.2,0.2,'C',
    'black','center','middle'));

$gr->stamps( closed_circle(3,-2,'blue') );
$gr->lb( new Label(3.2,-2.2,'D',
    'black','center','middle'));

$gr->stamps( closed_circle(2,-3,'blue') );
$gr->lb( new Label(2.2,-3.2,'A',
    'black','center','middle'));

$refreshCachedImages=1;

Context("Numeric");

$popup1 = PopUp(
  ["?","A","B","C","D","E"],
  "E",
);

$popup2 = PopUp(
   ["?","A","B","C","D","E"],
  "B",
);

$popup3 = PopUp(
  ["?","A","B","C","D","E"],
  "C",
);

$video = MODES(
HTML=> 
'<iframe width="420" height="315" src="//www.youtube.com/embed/7JMXi_FxA2o" frameborder="0" allowfullscreen></iframe>', 
TeX =>
"An embedded YouTube video."
);


###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Match the points A, B, and C with their coordinates.
$BR
$BR
\{ image( insertGraph($gr), 
width=>400,height=>400,tex_size=>800 ) \}
$BR
(Click on graph to enlarge)

$BR
$BR
($c,$d):  \{ $popup2->menu() \}
$BR
($a,$b):  \{ $popup1->menu() \}
$BR
($e,0):  \{ $popup3->menu() \}
$BR
$BR

END_TEXT
Context()->normalStrings;

BEGIN_PGML
[$video]*
END_PGML

BEGIN_TEXT
$BR

If the video does not work, \{ htmlLink ("https://www.youtube.com/watch?v=7JMXi_FxA2o", "click here to watch on YouTube.", "TARGET='_blank'")\}
$BR
END_TEXT


############################
#  Answer evaluation


install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( $popup2->cmp() );
ANS( $popup1->cmp() );
ANS( $popup3->cmp() );


