###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("LimitedPoint");

$a=random(-10,10);
$b=non_zero_random(-10,10);
$c=non_zero_random(-10,10);
$d=random(-10,10);

$pt1=Point("($a,$b)");
$pt2=Point("($c,$d)");


Context("Numeric");
Context()->{format}{number} = "%.3f";
$ans=Compute(sqrt(($a-$c)**2+($b-$d)**2));


###########################
#  Main text

BEGIN_PGML
Find the distance between [` [$pt1] `] and [` [$pt2] `].  Enter the distance as a radical or a decimal rounded to three decimal places.

[_______________]{$ans} [@ AnswerFormatHelp("numbers") @]*



END_PGML

