###########################
#  Setup

Context()->noreduce('(-x)-y','(-x)+y');

$a = non_zero_random(-9,-2,1);
$b = non_zero_random(2,5,1);
$x= non_zero_random(3,8,1);

$f = Compute("x^2+$a*x")->reduce;
$g = Compute("$b-x^2");

Context("Numeric");
Context()->operators->undefine("-","+","^","**","*");

$sum=(($x**2)+($a*$x))+($b-($x**2));
$diff=(($x**2)+($a*$x))-($b-($x**2));
$prod=(($x**2)+($a*$x))*($b-($x**2));
$quot=(($x**2)+($a*$x))/($b-($x**2));

$video = MODES(
