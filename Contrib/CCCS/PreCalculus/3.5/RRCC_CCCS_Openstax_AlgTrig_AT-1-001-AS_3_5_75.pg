###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"PGgraphmacros.pl",
"unionTables.pl",
"parserPopUp.pl",
"MathObjects.pl",
"parserRadioButtons.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###########################
#  Setup

Context("Numeric");
$a=random(2,5,1);
do { $b = random(1,4,1); } until ( $b != $a );

$f = Formula("|$a*x|-$b")->reduce();

$radio1 = RadioButtons(
  ["horizontal stretch by a factor of $a, shift up $b unit(s)", "horizontal stretch by a factor of $a, shift down $b unit(s)", "horizontal stretch by a factor of $a, shift right $b unit(s)", "horizontal stretch by a factor of $a, shift left $b unit(s)", "horizontal compression by a factor of $a, shift up $b unit(s)", "horizontal compression by a factor of $a, shift down $b unit(s)", "horizontal compression by a factor of $a, shift right $b unit(s)", "horizontal compression by a factor of $a, shift left $b unit(s)"],
  "horizontal compression by a factor of $a, shift down $b unit(s)", # correct answer
  last => ["horizontal compression by a factor of $a, shift left $b unit(s)"], # can be a list
);

###graph
$f[0] = "|$a*x|-$b for x in <-5,5> using color:red and weight:2";
$gr[0] = init_graph(-5,-5,5,5,'axes'=>[0,0]);
$gr[0]->lb('reset');
$gr[0]->lb(new Label(4.75,0.25,'x','black','center','middle'));
$gr[0]->lb(new Label(0.25,4.75,'y','black','center','middle'));

$f[1] = "|$a*x|+$b for x in <-5,5> using color:red and weight:2";
$gr[1] = init_graph(-5,-5,5,5,'axes'=>[0,0]);
$gr[1]->lb('reset');
$gr[1]->lb(new Label(4.75,0.25,'x','black','center','middle'));
$gr[1]->lb(new Label(0.25,4.75,'y','black','center','middle'));

$f[2] = "|1/$a*x|-$b for x in <-5,5> using color:red and weight:2";
$gr[2] = init_graph(-5,-5,5,5,'axes'=>[0,0]);
$gr[2]->lb('reset');
$gr[2]->lb(new Label(4.75,0.25,'x','black','center','middle'));
$gr[2]->lb(new Label(0.25,4.75,'y','black','center','middle'));

$f[3] = "|1/$a*x|+$b for x in <-5,5> using color:red and weight:2";
$gr[3] = init_graph(-5,-5,5,5,'axes'=>[0,0]);
$gr[3]->lb('reset');
$gr[3]->lb(new Label(4.75,0.25,'x','black','center','middle'));
$gr[3]->lb(new Label(0.25,4.75,'y','black','center','middle'));

@perm = shuffle(4);
for $i (0..3) {
  plot_functions( $gr[$perm[$i]], $f[$perm[$i]]); 
  $fig[$i]=image(insertGraph($gr[$perm[$i]]),
  width=>200,height=>200,tex_size=>450);
}

for($m=0; $m<4; $m=$m+1){
    if($perm[$m]==0){
         $k=$m;
    }
}

@letter=("A", "B", "C", "D");

$popup = PopUp(["?","A","B","C","D"], $letter[$k]);


###########################
#  Main text

BEGIN_PGML
Let [``f(x)=[$f]``]. Describe how it is the transformation of a toolkit function. 

              [@ $radio1->buttons() @]*  

END_PGML

BEGIN_TEXT
$BR
$BR
Which of the following is the graph of \( f(x) \)?
\{ $popup->menu() \}
$BR
$BR
$BCENTER
\{
BeginTable().
  AlignedRow([$fig[0],$fig[1]]).
  TableSpace(5,0).
  AlignedRow(["A","B"]).
  TableSpace(25,6).
  AlignedRow([$fig[2],$fig[3]]).
  TableSpace(5,0).
  AlignedRow(["C","D"]).
EndTable();
\}
$BR
(Click on a graph to enlarge it.)
$ECENTER
END_TEXT

############################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( $radio1->cmp() );
ANS( $popup->cmp() );
