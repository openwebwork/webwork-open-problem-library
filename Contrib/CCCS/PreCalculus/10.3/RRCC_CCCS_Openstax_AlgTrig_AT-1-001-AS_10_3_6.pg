# Setup

Context("Point");

$r = random(2,8,1);

# random integer to choose angle
$n=random(0,7,1);

# Array of 8 angles 
@latexangle=("pi/2", "pi/3" ,"pi/4" ,"pi/6", "(2pi)/3" , "(3pi)/4", "(5pi)/6", "pi");

# Selecting angle for PGML
$thetadisp = $latexangle[$n] ;

# Array of 8 angles 
@angle=(pi/2, pi/3 ,pi/4 ,pi/6, 2*pi/3, 3*pi/4, 5*pi/6, pi);

# Selecting angle for Compute
$theta = $angle[$n] ;

$x = $r*cos($theta);
$y = $r*sin($theta);


$ans = Point("($x,$y)");


