#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserAssignment.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PGML.pl",
"parserPopUp.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


##########################
#  Setup

$a = non_zero_random(-5,-2,1);
$b = non_zero_random(2,8,1);
$c = random(2,6);
$d=1;



$e=Compute("$d/$b");
$f=Compute("1/($c-$a)");

$n =($e)**($f);

$h=Compute("$b/($n)**($a)");



Context("Numeric")->variables->are(x=>"Real",y=>"Real");
parser::Assignment->Allow;
parser::Assignment->Function("f");

Context()->flags->set(
  tolerance => 0.00009,
  tolType => "absolute",
);

$fun = Formula("y=$h($n^x)");


#################################
#  Main text

BEGIN_PGML
Find the formula for an exponential equation that passes through the points ([$a],[$b]) and ([$c],[$d]). The exponential equation should be of the form [`y=ab^x`].  Round `a` and `b` values to at least 5 decimals, where appropriate.

[____________________]{$fun} [@ AnswerFormatHelp("equation") @]*


END_PGML


