###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("LimitedPoint");
#solution
$a = non_zero_random(-6,6,1);
$b = non_zero_random(-6,6,1);

#coefficients in left side of equations
$r = non_zero_random(-6,6,1);
$c = non_zero_random(-6,6,1);
$m = non_zero_random(-6,6,1);
$n = non_zero_random(-6,6,1);

#right side of equations
$d = $r*$a+ $c*$b;
$p = $m*$a+$n*$b;

#making sure not same line, if is reassigning
if ($r*$n == $c*$m && $r*$p == $m*$d){
     do {$n=non_zero_random(-6,6,1);} until (($r*$n) != ($c*$m));
     $p = $m*$a+$n*$b;
}

Context()->variables->add(y => 'Real');
Context()->noreduce('(-x)-y','(-x)+y');
$f = Formula("$r*x+$c*y")->reduce;
$g = Formula("$m*x+$n*y")->reduce;

$ans = List( Point("($a,$b)"));


$video = MODES(
HTML=> 
'<iframe width="420" height="315" src="//www.youtube.com/embed/ova8GSmPV4o"frameborder="0" allowfullscreen></iframe>', 
TeX =>
"An embedded YouTube video."
);
###########################
#  Main text

BEGIN_PGML
Solve the system  
>>[` [$f]  = [$d]  `]<<  
>>[` [$g] = [$p] `]<<

Solution: [_______________]{$ans} [@ AnswerFormatHelp("points") @]*  

If there is one solution, enter the solution as an ordered pair, [` (a,b) `],
including the parentheses. If there are no solutions, enter NONE. If there are infinitely many solutions, enter INF.
[$video]*
END_PGML


BEGIN_TEXT
$BR

If the video does not work, \{ htmlLink ("https://www.youtube.com/watch?v=ova8GSmPV4o", "click here to watch on YouTube.", "TARGET='_blank'")\}
$BR
END_TEXT


