###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("LimitedPoint");

$a = non_zero_random(-4,4,1);
$b = non_zero_random(-4,4,1);
$c = non_zero_random(-4,4,1);
do {$d = non_zero_random(-4,4,1);} until ($c - $a*$d !=0);
$m = non_zero_random(2.1,2.9,1);

Context()->variables->add(y => 'Real');
Context()->noreduce('(-x)-y','(-x)+y');
$f = Formula("$a*x+y")->reduce;
$g = Formula("$c*x+$d*y")->reduce;

$xans = ($m-$b*$d)/($c-$a*$d);
$yans = $b-$a*$xans;
$ans = List( Point("($xans,$yans)"));

###########################
#  Main text

BEGIN_PGML
Solve the system  
>>[` [$f]  = [$b]  `]<<  
>>[` [$g] = [$m] `]<<

Solution: [_______________]{$ans} [@ AnswerFormatHelp("points") @]*  

If there is one solution, enter the solution as an ordered pair, [` (a,b) `],
including the parentheses. If there are no solutions, enter NONE. If there are infinitely many solutions, enter INF.


END_PGML


