$i=random(1,3);
$j=random(1,3);
$m=$j/$i;

$gr = init_graph(-6,-6,6,6,
axes=>[0,0],
grid=>[12,12],
size=>[400,400]
);

add_functions($gr, "-$j for x in <-6,-$i> using color:blue and weight:2", "$m*x for x in <-$i,$i> using color:blue and weight:2", "$j for x in <$i,6> using color:blue and weight:2");

$gr->lb( new Label(-.25,5.75,'y',
    'red','center','middle'));
$gr->lb( new Label(5.75,0.25,'x',
    'red','center','middle'));

$refreshCachedImages = 1; 

Context("Interval");
$ans1=Interval("(-infinity,infinity)");
$ans2=Interval("(-infinity,infinity)");

$popup = PopUp(
