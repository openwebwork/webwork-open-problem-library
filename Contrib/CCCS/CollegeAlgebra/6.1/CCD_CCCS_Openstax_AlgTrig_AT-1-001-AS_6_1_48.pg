#Context("Fraction-NoDecimals");

sub Round {
	if (@_ == 1) { $_[0] > 0 ? int $_[0] + 0.5 : int $_[0] - 0.5}
	elsif (@_ == 2) { $_[0] > 0 ? Round($_[0]*10**$_[1])/10**$_[1] :Round($_[0]*10**$_[1])/10**$_[1]}
}

$a = non_zero_random(2,4,0.1);
$b = non_zero_random(1,4,1);
$c = non_zero_random(1,3,0.3);
$d = non_zero_random(2,5,1);
$f = Formula("$a*($b)^(-$d+1)+$c")->reduce;
#$ans = $f;

$r4 = Round($f, 4);
$r4 = Compute ($r4)->with(
tolType => 'absolute',
tolerance => 0.00005,
);

$ans=$r4;


