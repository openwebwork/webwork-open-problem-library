Context("Numeric");

$a = non_zero_random(-9,9,1);
$b = non_zero_random(1,9,1);

$f = Compute("sqrt(x)+$a")->reduce;
$g = Compute("x^2+$b")->reduce;

$ans1 = Compute("sqrt(x^2+$b)+$a")->reduce();
$ans2 = Compute("(sqrt(x)+$a)^2+$b")->reduce();
$ans2->{limits} = [[1,8]]; 


###########################
