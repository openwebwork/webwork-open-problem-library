Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');

$a = non_zero_random(1,9,1);
$b = non_zero_random(1,9,1);
$c = non_zero_random(-9,9,1);

$f = Compute("1/(x-$a)")->reduce;
$g = Compute("($b/x)+$c")->reduce;

$ans1 = Formula("x/($b+($c-$a)*x)")->reduce();
$ans2 = Formula("$b*x+($c-$a*$b)")->reduce();



