#  Initialization

DOCUMENT();

loadMacros(
"PGgraphmacros.pl",
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
);

TEXT(beginproblem());


###########################
#  Setup

$f1=Formula("((x+1)*(x-2))/(x-1)");
$f2=Formula("((x+1)*(x-3))/(x-2)");
$f3=Formula("((x-1)*(x+3))/(x+1)");
$f4=Formula("((x-1)*(x+2))/(x)");

@f=($f1,$f2,$f3,$f4);
$k=random(0,3,1);

$gr = init_graph(-6,-6,6,6,
axes=>[0,0],
grid=>[12,12],
size=>[400,400]
);

add_functions($gr, "$f[$k] for x in <-6,6> using color:blue and weight:2");
($gr->fn)[0]->steps(3000);

$refreshCachedImages=1;

Context()->variables->set(x=>{limits=>[4,8]});
$ans=Formula("$f[$k]")->reduce();



###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Write an equation for the graphed function.
$BR
$BR
$BCENTER
\{ image( insertGraph($gr), 
width=>400,height=>400,tex_size=>800 ) \}
$BR
$BR

