axes=>[0,0],
grid=>[6,6],
size=>[600,600]);
$gr1->h_grid("gray",-6, -5,-4,-3,-2,-1,1,2,3,4,5,6);
$gr1->v_grid("gray",-6, -5,-4,-3,-2,-1,1,2,3,4,5,6)
;

$x1 = Formula("(sqrt(2*$a))*cos(t)");
$x2 = Formula("-((sqrt(2*$a))*cos(t))");

$y1 = Formula("(sqrt(2*$b))*sin(t)");
