$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Convert \( \log_2(8)=3 \) to exponential form.", 
"\( 2^3=8 \)$BR",                
);
$mc -> extra(
"\( \displaystyle 8^2=3 \)$BR",
"\( 3^2=8 \)$BR",
"\( 2^8=3 \)$BR",
"\( 8^3=2 \)$BR",
);
