###########################

#  Parameters
$initial_population = random(1,10);
$initial_population = $initial_population * 50;

$initial_denominator = random(1,6);
$initial_denominator = $initial_denominator * 5;

$u = $initial_population * $initial_denominator; # numerator
$v = random(1,2);
$w = $initial_denominator - $v;
$x = random(4,7);
$x = $x/10.0;

$time = random(2,5);
$size = round(0.9 * $u / $v);

# Solutions

$x2 =  (-1 / $x) * ln(($u - 2 * $initial_population * $v) / (2 * $initial_population * $w));
$x2 = round(10 * $x2) / 10.0;

$x3 = $u / ($v + $w * exp(-1 * $x * $time));
$x3 = round($x3);

$x4 = (-1 / $x) * ln(($u - $size * $v) / ($size * $w));
$x4 = round(10 * $x4) / 10.0;

$x5 = round(($u + 0.0)/$v);

Context("LimitedNumeric");

###########################
#  Main text

Scaffold::Begin();
    
