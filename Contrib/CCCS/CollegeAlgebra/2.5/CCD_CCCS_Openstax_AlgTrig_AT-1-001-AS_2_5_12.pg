###########################
#  Setup

Context("Numeric");

$a=non_zero_random(2,4);
$b=non_zero_random(-4,4);
do { $c=non_zero_random(-5,5); } until ($c != $b/$a);

$f = Compute("$a*x^2+($a*$c+$b)x+$b*$c")->reduce;

$ans = List( -$c, -$b/$a );



