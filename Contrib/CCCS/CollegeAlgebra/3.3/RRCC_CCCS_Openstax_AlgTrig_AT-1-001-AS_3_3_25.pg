#  Initialization

DOCUMENT();

loadMacros(
"PGgraphmacros.pl",
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
);

TEXT(beginproblem());


###########################
#  Setup

$gr = init_graph(-5,-4,5,5,
axes=>[0,0],
grid=>[10,9],
size=>[400,400]
);

$a = random(-1,2,1);
$b = random(-2,2,1);

add_functions($gr, "-(x+$a)**2-$b for x in <-5,5> using color:blue and weight:2");

$refreshCachedImages=1;

Context("Interval");
$ans2=Interval("(-$a,infinity)");
$ans1=Interval("(-infinity,-$a)");

Context("Numeric");
$ans3= Compute(-$b);



###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Find the intervals where the function \( y=f(x) \), whose graph is given below, is increasing and where it is decreasing and find the value of the absolute maximum.
$BR
$BR
$BCENTER
\{ image( insertGraph($gr), 
width=>400,height=>400,tex_size=>800 ) \}
$BR
(Click on graph to enlarge)
$BR
$BR
Increasing:  \{ ans_rule(20) \}
\{ AnswerFormatHelp("intervals") \}
$BR
$BR
Decreasing:   \{ ans_rule(20) \}
\{ AnswerFormatHelp("intervals") \}
$BR
$BR
Absolute maximum y =    \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$ECENTER
END_TEXT
Context()->normalStrings;


############################
#  Answer evaluation


install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($ans1->cmp()  );
ANS($ans2->cmp()  );
ANS($ans3->cmp()  );


