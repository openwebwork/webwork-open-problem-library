###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserRadioButtons.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###########################
#  Setup

Context("Numeric");

$a = non_zero_random(-10,10,1);
$b = non_zero_random(-10,-1,1);
$c = non_zero_random(1,10,1);

$radio = RadioButtons(
  ["Parallel","Perpendicular","Neither"],
  "Parallel", # correct answer
  last => ["Neither"], # can be a list
);


###########################
#  Main text

BEGIN_PGML
Are the following lines parallel, perpendicular, or neither?  
[`y=[$a]x+[$b]`]  
[`y=[$a]x+[$c]`]

[@ $radio->buttons() @]*
END_PGML

############################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( $radio->cmp() );

############################
#  Solution

BEGIN_PGML_SOLUTION
The correct answer is [$radio->correct_ans()].
END_PGML_SOLUTION

COMMENT('MathObject version. Uses PGML.');

ENDDOCUMENT();