#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup
Context()->noreduce('(-x)-y','(-x)+y');

$a = non_zero_random(-4,4,1);
do {$b = non_zero_random(-4,4,1);} until ($b != $a);
$c = random(-5,5,1);
$d = non_zero_random(-4,4,1);
do {$e = non_zero_random(-6,6,1);} until ($e != -$d);

$f=Formula("$e*x^2+$a*$d*x+$c")->reduce;
$g=Formula("($d+$e)*x^2-($b*$d)*x+($a*$b*$d+$c)")->reduce;


Context("Interval");
$min = min($a,$b);
$max = max($a,$b);
if($d<0){$ans=Compute("($min,$max)");} else{$ans=Compute("(-infinity,$min)U($max,infinity)");}


###########################
#  Main text

BEGIN_PGML

Solve [`` [$f] < [$g] ``]. Enter the solution in interval notation.

[_______________]{$ans} [@ AnswerFormatHelp("intervals") @]*

END_PGML


