$n = random(1,2,1);

if($n ==1) {
    # Setup
    Context("Complex");

    $a = 0;
    $b = random(1,9,1);

    $z = Complex([$a,$b]);

    $ans = Compute("$b*(cos(pi/2)+i*sin(pi/2))");

    Context()->flags->set(
      tolerance => 0.1,
      tolType => "absolute",
    );
    ###########################
    #  Main text

    BEGIN_PGML
    Write the complex number [`[$z] `] in polar form, [` r(\cos(\theta)+i\sin(\theta)) `], with [` 
    r>0, 0 \leq \theta \leq 2 \pi`]. 


    [________________________________]{$ans} [@ AnswerFormatHelp("numbers") @]*
    END_PGML
}

if($n ==2) {
    # Setup
    Context("Complex");

    $a = 0;
    $b = random(9,1,1);

    $z = Complex([$a,-$b]);

    $ans = Compute("$b*(cos(3*pi/2)+i*sin(3*pi/2))");

    Context()->flags->set(
      tolerance => 0.1,
      tolType => "absolute",
    );
    ###########################
    #  Main text

    BEGIN_PGML
    Write the complex number [`[$z] `] in polar form, [` r(\cos(\theta)+i\sin(\theta)) `], with [` 
    r>0, 0 \leq \theta \leq 2 \pi`]. 


    [________________________________]{$ans} [@ AnswerFormatHelp("numbers") @]*
    END_PGML
}

