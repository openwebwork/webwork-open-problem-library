$den = random(9,13,2); 

$argument=$den**2-$num**2;
$sqrt="sqrt($argument)";

Context("Fraction-NoDecimals");
Context()->functions->enable("sqrt");

$sin=Fraction($num,$den);
$ans=-Compute("$sqrt/$den");

