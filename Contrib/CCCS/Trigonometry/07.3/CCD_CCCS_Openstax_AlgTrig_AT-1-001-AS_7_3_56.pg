# Setup

$a=random(3,9,1);
$chooser=random(1,2,1);


if ( $chooser==1)  {
$angle="(3pi)/4";
$first="$a*(-sqrt2/2)";
$second="$a*(sqrt2/2)";

Context("Point");
$ans=Point($first, $second);
}

elsif( $chooser==2)  {

$angle="(7pi)/4";
$first="$a*(sqrt2/2)";
$second="$a*(-sqrt2/2)";

Context("Point");
$ans=Point($first, $second);
}
