loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
"contextTrigDegrees.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("TrigDegrees");

$A = random(20,40,1);
$b = random(13,17,1);
do {$c = random(8,14,1);} until ($c < $b);


$area = 1/2*$b*$c*sin($A);
$ans = Compute("$area");

Context()->flags->set(
  tolerance => 0.1,
  tolType => "absolute",
);
###########################
#  Main text

BEGIN_PGML

Find the area of the triangle, where [` A = [$A]^\circ`], [`b = [$b]`], and [`c= [$c]`]. Round to the nearest tenth. 

END_PGML

