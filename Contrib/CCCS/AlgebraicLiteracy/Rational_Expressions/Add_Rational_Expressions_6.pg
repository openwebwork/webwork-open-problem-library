#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl",
  "contextRationalFunction.pl",
  "contextPolynomialFactors.pl",

);

##############################################


Context("Numeric");

do {
$a=non_zero_random(-6,6);
$b=non_zero_random(-6,6);
$c=random(1,6);
$d=random(1,6);
} until ($c*$b-$a*$d) != $a*($c-$d) && ($c*$b-$a*$d) != $b*($c-$d); #this line guarantees that the numerator will not contain the denominator as a factor


$e=$c-$d;
$f=$c*$b-$a*$d;

##############################################

TEXT(beginproblem());

Context("PolynomialFactors-Strict");

Context()->variables->add(z => 'Real');

$ans1 = Formula("$e*x+$f");
$ans2 = Formula("(x+$b)(x+$a)");


BEGIN_PGML

Subtract the rational expressions and simplify. Enter the numerator and denominator of your simplified answer below. 

[` \dfrac{[$c]}{x+[$a]} - \dfrac{[$d]}{x+[$b]} =`] 

Numerator:   [________]{$ans1}  
Denominator: [_________]{$ans2}
 
END_PGML

##############################################



