###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup
Context("Numeric");
$var = list_random('b','d','m','n','u','v','x','y','p','q');
Context()->variables->are($var=>'Real');

$a = random(2, 8);
$b = non_zero_random(-10, 10);
$c = non_zero_random(-10, 10);
do{
$d = non_zero_random(-8, 10);
}until($d > $c);

$f = Formula("$a*$var + $b")->reduce;
$ans = Compute("(($d - $c)**2 - $b)/$a");

$diff = $d-$c;
$sq = ($d-$c)**2;
$rhs = $sq - $b;

###########################
#  Main text

BEGIN_PGML
Solve the radical equation.  Be sure to check for extraneous solutions. 

If you find more than one solution, give your answer as a comma-separated list. If there is no solution enter "NONE".

[`` {([$f])}^{\frac{1}{2}} + [$c] = [$d] ``].

[`[$var] =`] [_______________]{$ans} [@ AnswerFormatHelp("numbers") @]*


END_PGML


############################
#  Solution

BEGIN_PGML_SOLUTION
[`\sqrt{[$f]} + [$c] = [$d]`]

[`\sqrt{[$f]} = [$diff]`]

[`(\sqrt{[$f]})^2 = [$diff]^2`]

[`[$f] = [$sq]`]

[`[$a][$var] = [$rhs]`]

[`[$var] = [$ans]`]

END_PGML_SOLUTION

COMMENT('MathObject version. Uses PGML.');

ENDDOCUMENT();