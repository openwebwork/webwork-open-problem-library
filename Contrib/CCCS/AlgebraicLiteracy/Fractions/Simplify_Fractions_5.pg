Context("LimitedFraction");
Context()->flags->set(requirePureFractions=>1);
Context()->flags->set(showMixedNumbers=>0);

$a = list_random(2,4,6,8);
$b = list_random(3,5,7,9);

do {$c=random(1,5)} until ( abs($c) != 1 );
$d=random(1,3);

$e=$a*$c*$d;
$f=$b*$c*$d;

$ans=Fraction($a,$b);

