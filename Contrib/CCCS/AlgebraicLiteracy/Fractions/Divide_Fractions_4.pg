#A fraction divided by an integer. Uses random numbers and complex fraction notation. #Student must reduce fraction if necessary
###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("LimitedFraction");
Context()->flags->set(requirePureFractions=>1);
Context()->flags->set(showMixedNumbers=>0);

$a = non_zero_random(1,8);
do {$b = non_zero_random(1,8)} until abs($a)!=abs($b);
$c = non_zero_random(-8,8);


$ans=Fraction($a,$b*$c);

#Context()->flags->set(reduceFractions=>0);
###########################
