###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###########################
#  Setup

Context("Numeric");


do {
$a = random(-9,-1);
$b = random(2,9);
$c = random(2,9);
$d = random(1,9);
$e = random(2,9);}

until (abs($c)!=abs($d) && abs($b)!=abs($a)) && $e-$c*$b-$d*$a!=0 && ($e-$c*$b-$d*$a)/($c+$d)!=-$a && ($e-$c*$b-$d*$a)/($c+$d)!=-$b;

$aplusb=$a+$b;
$ab=$a*$b;

$ans1=($e-$c*$b-$d*$a)/($c+$d);

Context("Fraction-NoDecimals");

$ans2=Fraction($ans1);

###########################
#  Main text

BEGIN_PGML

Solve the rational equation.  Enter the answer as a reduced fraction. If there is no answer, enter "NONE".  

[`\dfrac{[$c]}{x+[$a]} + \dfrac{[$d]}{x+[$b]} = \dfrac{[$e]}{x^2+[$aplusb]x+[$ab]}`]


[`x`] = [_________________]{$ans2} [@ AnswerFormatHelp("numbers") @]*


END_PGML


