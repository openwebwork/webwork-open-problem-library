#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"answerHints.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);


######################################
#  Setup
Context("Numeric");
$A = list_random('A','B','C','D');
$a = list_random('a','b','c','d');
$x = list_random('t','x','y','z');
$n = non_zero_random(-8,8);
$b = list_random('p','q','r','s');


Context()->variables->are($A=>'Real',
                          $a=>'Real',$b=>'Real',
                          $x=>'Real');

$ans = Formula("($A-$a*$n-$b)/$a");


######################################
TEXT(beginproblem());

BEGIN_PGML

Solve the formula for [`[$x]`].

[`[$A] = [$a]([$x]+[$n])+[$b]`];

[`[$x]=`][_______________]{$ans} [@ AnswerFormatHelp("formulas") @]*


END_PGML

##############################################

BEGIN_PGML_SOLUTION
END_PGML_SOLUTION

ENDDOCUMENT();

