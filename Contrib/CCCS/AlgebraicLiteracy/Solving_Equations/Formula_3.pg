###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"answerHints.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);


######################################
#  Setup
Context("Numeric");
$x = list_random('x','y','z');
$y = list_random('t','u','w');

Context()->variables->are($x=>'Real',
                          $y=>'Real');

$A = non_zero_random(-10,10);
$B = non_zero_random(-10,10);
$C = non_zero_random(-10,10);
$exp = random(2, 8);

$ans = Formula("($C-$B*$y**$exp)/$A");


######################################
TEXT(beginproblem());

BEGIN_PGML

Solve the formula for [`[$x]`].

[`[$B]{[$y]}^{[$exp]}+[$A][$x]=[$C]`];

[`[$x]=`][_______________]{$ans} [@ AnswerFormatHelp("formulas") @]*


END_PGML

##############################################

BEGIN_PGML_SOLUTION
END_PGML_SOLUTION

ENDDOCUMENT();
