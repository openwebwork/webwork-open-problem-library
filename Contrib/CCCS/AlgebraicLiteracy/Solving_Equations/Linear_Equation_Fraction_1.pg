#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"answerHints.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("LimitedFraction");

Context()->flags->set(requirePureFractions=>1);
Context()->flags->set(showMixedNumbers=>0);

$x = list_random('a','b','c','d','m','n','p','q','r','t','w','x','y','z');
Context()->variables->are($x => "Real");
Context()->noreduce('(-x)-y','(-x)+y');

$num1 = non_zero_random(-10,10);
$den1 = non_zero_random(-10,10);

$num2 = non_zero_random(-10,10);
$den2 = non_zero_random(-10,10);

$a = Fraction($num1,$den1);
$b = Fraction($num2,$den2);

$ans = Fraction($num2*$den1 - $num1*$den2, $den1*$den2);


###########################
#  Main text

BEGIN_PGML
Solve the equation [`[$x]+[$a]=[$b]`]. Write your answer as an integer or fraction.

[`[$x]=`] [_________________]{$ans} 

END_PGML


