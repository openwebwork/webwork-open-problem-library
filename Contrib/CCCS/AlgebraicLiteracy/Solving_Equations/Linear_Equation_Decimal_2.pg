###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"answerHints.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("Numeric");
$x = list_random('a','b','c','d','m','n','p','q','r','t','w','x','y','z');
Context()->variables->are($x => "Real");
Context()->noreduce('(-x)-y','(-x)+y');

$a = non_zero_random(-20,20);
$adecimal = random(1, 99);
$A = $a + $adecimal/100;

$b = non_zero_random(-20,20);
$bdecimal = random(1, 9);
$B = $b + $bdecimal/10;

$C = list_random(1, 3, 4, 9);


$lefteqn = Formula("$A + $x")->reduce;
$righteqn = Formula("$B-$C*$x")->reduce;

Context("LimitedNumeric");
Context()->flags->set(
  tolerance => 0.0005,
  tolType => "absolute",
);

$ans = ($B - $A)/($C + 1);


###########################
#  Main text

BEGIN_PGML
Solve the equation 

[`[$lefteqn]=[$righteqn]`]

[`[$x]=`] [_________________]{$ans} 

END_PGML


