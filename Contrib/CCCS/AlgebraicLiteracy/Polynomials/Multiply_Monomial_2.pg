#Multiply a monomial by a polynomial
## DBCCSS()
## DBsubject(Algebra)
## DBchapter(Operations on polynomial and rational expressions)
## DBsection(Polynomials: multiply)
## Institution(Red Rocks Community College)
## Author(Martha Stevens)
## MO(1)
## KEYWORDS('exponent','multiply','polynomial')

##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PCCmacros.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl",
);

##############################################

Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');
Context()->variables->add(y => "Real");

#Monomial ax^my
$a = non_zero_random(-10, 10);
$m = random(2, 5);
$f1 = Formula("$a*x^$m*y")->reduce;

#Polynomial bx^3y + cx + dy^3
$b = non_zero_random(-10, 10);
$c = non_zero_random(-10, 10);
$d = non_zero_random(-10, 10);
$f2 = Formula("$b*x^3*y + $c*x + $d*y^3")->reduce;

#For Solution
$c1 = $a*$b;
$c2 = $a*$c;
$c3 = $a*$d;
$e1 = $m+3;
$e2 = $m+1;
$e3 = $m;


#Answer
Context("LimitedPolynomial-Strict");
Context()->variables->add(y =>"Real");
$ans = Formula("$c1*x^$e1*y^2 + $c2*x^$e2*y + $c3*x^$e3*y^4")->reduce;




##############################################
TEXT(beginproblem());

BEGIN_PGML

Find the product.

    [`\left([$f1]\right)\left([$f2]\right)= `][________________]{$ans}

END_PGML


#BEGIN_PGML_SOLUTION
#
#END_PGML_SOLUTION
##############################################

ENDDOCUMENT();
