DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "contextFraction.pl",
  "contextLimitedRadical.pl",
  "PGcourse.pl",
  "parserRoot.pl",
);

######################################

TEXT(beginproblem());
Context("Numeric");

#Part A
$in1 = list_random(2, 3, 5, 6, 7, 11);
do{
$in2 = list_random(2, 3, 5, 6, 7, 11);
}until($in2 != $in1);

$out1 = random(2, 7);
$out2 = random(2, 7);
do{
$out3 = random(2, 7);
}until($out3 != $out1);

$b1 = non_zero_random(-5, 5);
$b3 = non_zero_random(-5, 5);

$rad1 = $out1**2*$in1;
$rad2 = $out2**2*$in1;
$rad3 = $out3**2*$in2;

$c1 = $out1*$b1 + $out2;
$c2 = $b3*$out3;

Context("LimitedRadical");

$ans1 = Formula("$c1*sqrt($in1)+$c2*sqrt($in2)");

##########################################


#####################################################

BEGIN_PGML

Simplify.


[`` [$b1]\sqrt{[$rad1]} + \sqrt{[$rad2]} + [$b3]\sqrt{[$rad3]} = ``] [_____________]{$ans1->cmp(mathQuillOpts => "rootsAreExponents: false")}
 
END_PGML

############################################################


BEGIN_PGML_SOLUTION
[`` [$b1]\sqrt{[$rad1]} + \sqrt{[$rad2]} + [$b3]\sqrt{[$rad3]} ``]

[`[$b1] \sqrt{[$out1]^2 \cdot [$in1]} + \sqrt{[$out2]^2 \cdot [$in1]} + [$b3] \sqrt{[$out3]^2 \cdot [$in2]}`]

[`[$b1]\cdot[$out1] \sqrt{[$in1]} + [$out2]\sqrt{[$in1]} + [$b3] \cdot [$out3] \sqrt{[$in2]}`]

[`[$ans1]`]

END_PGML_SOLUTION

