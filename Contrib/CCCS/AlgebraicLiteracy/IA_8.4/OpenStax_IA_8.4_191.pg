DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "contextFraction.pl",
  "contextLimitedRadical.pl",
  "PGcourse.pl",
  "parserRoot.pl",
);

######################################

TEXT(beginproblem());
Context("Numeric");

#Part A: Square Roots
$inA = list_random(2, 3, 5, 6, 7, 11, 13);
$nA = random(2, 10);
$mA = random(2, 10);

$cA = $inA*$mA;

#Part B: Cube Roots
$outB = random(2, 5);
$inB = random(2, 5);
$rad1B = $outB**2;
$rad2B = $outB*$inB;
$nB = random(2, 10);

Context("LimitedRadical");

$ans1 = Formula("$nA*sqrt($inA) + $cA");
$ans2 = Formula("$nB*root(3, $rad1B) + $outB*root(3, $inB)");

##########################################


#####################################################

BEGIN_PGML

Multiply and Simplify.

Use *root(n, x)* to enter [`\sqrt[n]{x}`]. For example: [`\sqrt[3]{2} =`]  *root(3, 2)*.

  (a)  [`` \sqrt{[$inA]}  ( [$nA] + [$mA]\sqrt{[$inA]}) = ``] [_____________]{$ans1}
  
  (b)  [`` \sqrt[3]{[$rad1B]} ( [$nB] + \sqrt[3]{[$rad2B]}) = ``] [_____________]{$ans2}

END_PGML

############################################################


BEGIN_PGML_SOLUTION
(a)  [`` \sqrt{[$inA]}  ( [$nA] + [$mA]\sqrt{[$inA]})``]

[`[$nA] \cdot \sqrt{[$inA]} + [$mA] \sqrt{[$inA] \cdot [$inA]}`]

[`[$nA] \sqrt{[$inA]} + [$mA] \cdot [$inA]`]

[`[$ans1]`]
  
(b)  [`` \sqrt[3]{[$rad1B]} ( [$nB] + \sqrt[3]{[$rad2B]})``]

[`[$nB] \cdot \sqrt[3]{[$rad1B]} + \sqrt[3]{[$rad1B] \cdot [$rad2B]}`]

[`[$nB] \cdot \sqrt[3]{[$rad1B]} + \sqrt[3]{[$outB] \cdot [$outB] \cdot [$outB] \cdot [$inB]}`]

[`[$nB] \sqrt[3]{[$rad1B]} + [$outB]\sqrt[3]{[$inB]}`]

[`[$ans2]`]

END_PGML_SOLUTION

######################################

ENDDOCUMENT();