# DESCRIPTION
## Writing radicals as complex numbers
## ENDDESCRIPTION


## DBsubject(Complex analysis)
## DBchapter(Arithmetic)
## DBsection()
## Date(6/2019)
## Institution(Red Rocks Community College, Colorado Community College System)
## Author(Martha Stevens)
## MO(1)
## KEYWORDS('algebra', 'complex')


###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
"contextLimitedRadical.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("LimitedRadical");
Context()->variables->add(i=>'Real');
$a = random(2, 9);
$asq = $a**2;
$ans1 = Formula("$a*i");

$b = list_random(2, 3, 5, 7, 11, 13, 15);
$ans2 = Formula("sqrt($b)*i");

$in = list_random(2, 3, 5, 6, 10);
$out = random(2, 6);
$rad = $out**2*$in;
$ans3 = Formula("$out*sqrt($in)*i");

###########################
#  Main text

BEGIN_PGML
Write each expression in terms of [`i`] and simplify if possible.

 (a)  [`\sqrt{-[$asq]} = `][____________]{$ans1}
 
 (b)  [`\sqrt{-[$b]} = `][____________]{$ans2}
 
 (c)  [`\sqrt{-[$rad]} = `][____________]{$ans3}

END_PGML


############################
#  Solution

BEGIN_PGML_SOLUTION
(a)  [`\sqrt{-[$asq]} = [$ans1]`]
 
 (b)  [`\sqrt{-[$b]} = [$ans2]`]
 
 (c)  [`\sqrt{-[$rad]} = [$ans3]`]

END_PGML_SOLUTION

COMMENT('MathObject version. Uses PGML.');

ENDDOCUMENT();