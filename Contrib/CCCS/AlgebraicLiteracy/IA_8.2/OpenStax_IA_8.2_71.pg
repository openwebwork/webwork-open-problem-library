DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "contextFraction.pl",
  "contextLimitedRadical.pl",
  "PGcourse.pl",
  "parserRoot.pl",
);

######################################

TEXT(beginproblem());
Context("Numeric");
Context()->variables->are(x =>'Real', y =>'Real', z =>'Real'); 

#square root
$a1 = random(1, 7);
$exp1 = 2*$a1 + 1;
$m1 = 2*$a1;
$in1 = list_random(2, 3, 5, 7);
$out1 = random(2, 6);
$rad1 = Formula("$in1*$out1**2*x^$exp1");

#cube root
$a2 = random(1, 7);
$b2 = random(1, 2);
$exp2 = 3*$a2 + $b2;
$m2 = 3*$a2;
$in2 = list_random(2,3);
$out2 = random(2,5);
$rad2 = Formula("$in2*$out2**3*y^$exp2");

#4th root
$a3 = random(1, 7);
$b3 = random(1, 3);
$exp3 = 4*$a3 + $b3;
$m3 = 4*$a3;
$in3 = random(2, 15);
$rad3 = Formula("$in3*z^$exp3");


Context("LimitedRadical");
Context()->variables->are(x =>'Real', y =>'Real', z =>'Real'); 

$ans1 = Formula("$out1*x^$a1*root(2,$in1*x)");
$ans2 = Formula("$out2*y^$a2*root(3,$in2*y^$b2)");
$ans3 = Formula("z^$a3*root(4,$in3*z^$b3)");

##########################################


#####################################################

BEGIN_PGML

Simplify each radical. Assume all variables are positive.

Use *root(n, x)* to enter [`\sqrt[n]{x}`]. For example: [`\sqrt[3]{2} =`]  *root(3, 2)* and [`\sqrt[4]{y^{3}} = `] *root(4, y^3)*.

  (a)  [`` \sqrt{[$rad1]} = ``] [_____________]{$ans1}
  
  (b)  [`` \sqrt[3]{[$rad2]} = ``] [_____________]{$ans2}
  
  (c)  [`` \sqrt[4]{[$rad3]} = ``] [_____________]{$ans3}

END_PGML

############################################################


BEGIN_PGML_SOLUTION
*Part A*
[`\sqrt{[$rad1]} = \sqrt{[$in1] \cdot [$out1] \cdot [$out1] \cdot x^{[$m1]} \cdot x} = [$ans1]`]

*Part B*
[`\sqrt[3]{[$rad2]} = \sqrt[3]{[$in2] \cdot [$out2] \cdot [$out2] \cdot [$out2] \cdot y^{[$m2]} \cdot y^[$b2]} = [$ans2]`]

*Part C*
[`\sqrt[4]{[$rad3]} = \sqrt[4]{[$in3] \cdot z^{[$m3]} \cdot z^[$b3]} = [$ans3]`]

END_PGML_SOLUTION

######################################



ENDDOCUMENT();
