DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "contextFraction.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl",
  "parserRoot.pl",
);

######################################

TEXT(beginproblem());
Context("Numeric");
$var = list_random('a','b','m','n','t','q','r','y','z');
Context()->variables->add($var =>'Real'); 
Context()->functions->disable("Numeric");

$n = random(3, 7);
do{
$m = random(3, 7);
}until($n != $m);


$ans1 = Formula("$var^(1/$n)");
$ans2 = Formula("$var^(1/$m)");
$ans3 = Formula("$var^(1/2)");



##########################################


#####################################################

BEGIN_PGML

Write each radical expression using rational exponents.

(a)  [`` \sqrt[[$n]]{[$var]} = ``] [_____________]{$ans1}

(b)  [`` \sqrt[[$m]]{[$var]} = ``] [_____________]{$ans2}

(c)  [`` \sqrt{[$var]} = ``] [_____________]{$ans3}

  
END_PGML

############################################################


BEGIN_PGML_SOLUTION
(a)  [`` \sqrt[[$n]]{[$var]} = [$var]^{1/[$n]}``]

(b)  [`` \sqrt[[$m]]{[$var]} = [$var]^{1/[$m]} ``] 

(c)  [`` \sqrt{[$var]} = [$var]^{1/2}``] 

END_PGML_SOLUTION

######################################



ENDDOCUMENT();
