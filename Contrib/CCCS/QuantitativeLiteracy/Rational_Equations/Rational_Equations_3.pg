###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",

"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###########################
#  Setup

Context("Numeric");


$a = non_zero_random(-9,9);
$b = non_zero_random(2,9);
$c = random(2,9);
do {$d = random(1,9)} until abs($a)!=abs($d);
do {$e = random(2,9)} until abs($b)!=abs($e) && (-$a*$b*$e)!=0;

$ans1=(-$a*$b*$e)/($c*$e+$b*$d);

Context("Fraction-NoDecimals");

$ans2=Fraction($ans1);

###########################
#  Main text

BEGIN_PGML

Solve the rational equation.  Enter the answer as a reduced fraction. If there is no answer, enter "NONE".

[`\dfrac{[$a]}{x^2} + \dfrac{[$c]}{[$b]x} + \dfrac{[$d]}{[$e]x} = 0`]


[`x`] = [_________________]{$ans2} [@ helpLink("numbers") @]*


END_PGML


