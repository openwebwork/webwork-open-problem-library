###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###########################
#  Setup

Context("Numeric");

do {
$a = 0;
$b = random(2,9);
$c = random(2,9);
$d = random(1,9);
$e = random(2,9);}

until (abs($c)!=abs($d) && abs($b)!=abs($a)) && $e-$c*$b-$d*$a!=0 && ($e-$c*$b-$d*$a)!=-$a*($c+$d) && ($e-$c*$b-$d*$a)!=0;

$aplusb=$a+$b;
$ab=$a*$b;

$ans1=($e-$c*$b-$d*$a)/($c+$d);

$lcd = Formula("x(x+$b)")->reduce;
$lhs = Formula("$c(x+$b) + $d*x")->reduce;
$lhs2 = Formula("$c*x + $c*$b + $d*x")->reduce;
$coef = $c+$d;
$lhs3 = Formula("$coef*x + $c*$b")->reduce;
$rhs = $e-$c*$b;


Context("Fraction-NoDecimals");

$ans2=Fraction($ans1);

###########################
#  Main text

BEGIN_PGML

Solve the rational equation.  Enter the answer as a reduced fraction. If there is no answer, enter "NONE".  

[`\dfrac{[$c]}{x} + \dfrac{[$d]}{x+[$b]} = \dfrac{[$e]}{x^2+[$aplusb]x}`]


[`x`] = [_________________]{$ans2} [@ AnswerFormatHelp("numbers") @]*


END_PGML


############################
#  Solution

BEGIN_PGML_SOLUTION
Multiply every term by the least common denominator.  The LCD is [`[$lcd]`].

[`\dfrac{[$c]}{x} \cdot [$lcd] + \dfrac{[$d]}{x+[$b]} \cdot [$lcd] = \dfrac{[$e]}{x^2+[$aplusb]x} \cdot [$lcd]`]

[`[$lhs] = [$e]`]

[`[$lhs2] = [$e]`]

[`[$lhs3] = [$e]`]

[`[$coef]x = [$rhs]`]

[`x = [$ans2]`]

END_PGML_SOLUTION

COMMENT('MathObject version. Uses PGML.');

ENDDOCUMENT();
