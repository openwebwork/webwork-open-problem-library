#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",

"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());


###########################
#  Setup

Context("Numeric");


$a = random(2,9);
$b = random(2,9);
$c = random(2,9);
do {$d = random(2,9)} until $b!=$d && (-$a*$d-$b*$c)!=-$a*($a+$c) && (-$a*$d-$b*$c)!=-$b*($a+$c);

$ans1=(-$a*$d-$b*$c)/($a+$c);

Context("Fraction-NoDecimals");

$ans2=Fraction($ans1);

###########################
#  Main text

BEGIN_PGML

Solve the rational equation.  Enter the answer as a reduced fraction. If there is no answer, enter "NONE".

[`\dfrac{[$a]}{x+[$b]} + \dfrac{[$c]}{x+[$d]}=0`]


[`x`] = [_________________]{$ans2} [@ helpLink("numbers") @]*


END_PGML


