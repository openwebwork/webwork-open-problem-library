DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",

  "PCCmacros.pl",
  "contextFraction.pl",
"contextLimitedPolynomial.pl",
  "PGcourse.pl",
);

##############################################

Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');

$a = non_zero_random(-5, 5);
$b = non_zero_random(-5, 5);
$c = non_zero_random(-5, 5);
$d = non_zero_random(-5, 5);
$e = non_zero_random(-5, 5);

$bc = $b*$c;
$bd = $b*$d;

$abd = $a+$b*$d;
$bce = $b*$c+$e;

$f=Formula("$a +$b($c*x+$d)+$e*x")->reduce;

Context("LimitedPolynomial-Strict");
Context()->noreduce('(-x)-y','(-x)+y');

$ans=Formula("$bce*x+$abd")->reduce;


##############################################

TEXT(beginproblem());

BEGIN_PGML

Simplify the expression, [`` [$f] ``].

[_______________]{$ans} [@ helpLink("formulas") @]*


END_PGML

##############################################

BEGIN_PGML_SOLUTION
Distribute first.

[`[$f]`]

[`[$a] + [$b]([$c]x) + [$b]([$d]) + [$e]x`]

[`[$a] + [$bc]x + [$bd] + [$e]x`]

Then combine like terms.

[`[$ans]`]

END_PGML_SOLUTION

ENDDOCUMENT();


