##############################################
DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PCCmacros.pl",
  "contextLimitedFactor.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedFactor");
Context()->noreduce('(-x)-y','(-x)+y');
#$var1 = RandomVariableName(type=>'variable');
$var1 = 'x';
$var2 = 'y';
Context()->variables->are($var1=>'Real',$var2=>'Real');

Context()->strings->add("cannot be factored"=>{},
    "cannot be factored."=>{alias=>"cannot be factored"});
Context()->strings->add('prime'=>{}, 'it is prime'=>{alias=>'prime'});
Context()->noreduce('(-x)-y', '(-x)+y'); 

# the coefficients
$a = list_random(2, 4);
$b = list_random(3, 5, 7, 9);
$c = 1;

$leading = $a**2;
$middle = -$a*$b;
$end = $b**2;
$question = Formula("$a**3*$var1^3+$b^3")->reduce;
$ans = Formula("($a*$var1+$b)($leading*$var1^2+$middle*$var1+$end)")->reduce;

$hintval = $b**3;
$hint = "\text{Hint}: $hintval=$b^3" if(abs($b)>5);

#For Solution
$acubed = $a**3;

##############################################
TEXT(beginproblem());

BEGIN_PGML
Factor the given polynomial 

    [`[$question]=`] [___________________]{$ans}

If the expression cannot be factored then answer with *prime*.

END_PGML

if(abs($a)>5 or abs($b)>5)
{
$hintvala = $a**3;
$hintvalb= $b**3;
if(abs($a)<=5 and abs($b)>5)
{
    $hint = "\text{Hint}: $hintvalb=$b^3";
}
elsif(abs($b)<=5 and abs($a)>5)
{
    $hint = "\text{Hint}: $hintvala=$a^3";
}
elsif(abs($b)>5 and abs($a)>5)
{
    $hint = "\text{Hint}: $hintvala=$a^3\text{, } $hintvalb=$b^3";
}
Context()->texStrings;
BEGIN_TEXT
\($hint\)
END_TEXT
}

$step = Formula("$a$var1$var2")->reduce;

###################################################
BEGIN_PGML_SOLUTION
The expression is a sum of cubes.  We can factor with the formula:

[`a^3 + b^3 = (a + b)(a^2 - ab + b^2)`]

[`[$acubed][$var1]^3 = ([$a][$var1])^3`]

[`[$hintval] = ([$b])^3`]

Let [`a = [$a][$var1]`] and [`b = [$b]`]

[`([$a][$var1] + [$b])(([$a][$var1])^2 - [$a][$var1]\cdot [$b] + [$b]^2)`]

[`[$ans]`]

END_PGML_SOLUTION
