##############################################

###########################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",

  "PGML.pl",
  "PGcourse.pl",
"PGgraders.pl"
);

TEXT(beginproblem());



###########################
#  Setup

Context("Numeric");
Context()->variables->add(y => "Real");

$a = non_zero_random(-6, 6);
$b = non_zero_random(-6, 6);
$c = non_zero_random(-10, 10);

$left = Formula("$a*x+$b*y")->reduce;
$f = Formula("($c - $a*x)/$b");

$x0 = random(-8,8);
do { $x1 = random(-8,8);} until ($x1 != $x0);
do{$x2 = random(-8,8);} until (($x2 != $x0) and ($x2 != $x1));
$y3 = random(-8,8);

$ans0 = $f->eval(x=>$x0);
$ans1 = $f->eval(x=>$x1);
$ans2 = $f->eval(x=>$x2);
$ans3 = Compute("($c-$b*$y3)/$a")->reduce;

@answer = ($ans3, $ans0, $ans1, $ans2);

$table = $BCENTER.begintable(5) .
row( "\(x  \)", $x0, $x1, $x2, ans_rule(5) ) .
row( "\(y  \)", ans_rule(5), ans_rule(5), ans_rule(5),$y3 ) .
endtable().$ECENTER;

#For Solution
$right0 = $c-$a*$x0;
$l0 = $a*$x0;
$right1 = $c-$a*$x1;
$l1 = $a*$x1;
$right2 = $c-$a*$x2;
$l2 = $a*$x2;
$right3 = $c-$b*$y3;
$l3 = $b*$y3;

###########################
#  Main text

BEGIN_PGML
Complete the table of values for [` [$left] = [$c] `].
[@ helpLink("numbers") @]*

[@ $table @]***
END_PGML


############################

$showPartialCorrectAnswers = 1;

foreach my $i (0..3) {
  ANS( $answer[$i]->cmp() );
}

############################
#  Solution

BEGIN_PGML_SOLUTION
Plug the given values into the equation [`[$left] = [$c]`] to complete the table of values.

*First Column*

[`x = [$x0]`]

[`[$a]([$x0]) + [$b]y = [$c]`]

[`[$l0] + [$b]y = [$c]`]

[`[$b]y = [$right0]`]

[`y = [$ans0]`]

*Second Column*

[`x = [$x1]`]

[`[$a]([$x1]) + [$b]y = [$c]`]

[`[$l1] + [$b]y = [$c]`]

[`[$b]y = [$right1]`]

[`y = [$ans1]`]

*Third Column*

[`x = [$x2]`]

[`[$a]([$x2]) + [$b]y = [$c]`]

[`[$l2] + [$b]y = [$c]`]

[`[$b]y = [$right2]`]

[`y = [$ans2]`]

*Fourth Column*

[`y = [$y3]`]

[`[$a]x + [$b]([$y3]) = [$c]`]

[`[$a]x + [$l3] = [$c]`]

[`[$a]x = [$right3]`]

[`x = [$ans3]`]

END_PGML_SOLUTION

COMMENT('MathObject version. Uses PGML.');

ENDDOCUMENT();