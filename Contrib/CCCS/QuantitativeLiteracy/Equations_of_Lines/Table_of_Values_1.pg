#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGML.pl",
  "PGcourse.pl",
"PGgraders.pl"
);

TEXT(beginproblem());



###########################
#  Setup

Context("Numeric");

$m=non_zero_random(-5,5);
$b=non_zero_random(-5,5);

$f = Formula("$m*x+$b")->reduce;

$x0 = random(-8,8);
do { $x1 = random(-8,8);} until ($x1 != $x0);
do{$x2 = random(-8,8);} until (($x2 != $x0) and ($x2 != $x1));
$y3 = random(-8,8);

$ans0 = $f->eval(x=>$x0);
$ans1 = $f->eval(x=>$x1);
$ans2 = $f->eval(x=>$x2);
$ans3 = Compute("($y3-$b)/$m");

@answer = ($ans3, $ans0, $ans1, $ans2);

$table = $BCENTER.begintable(5) .
row( "\(x  \)", $x0, $x1, $x2, ans_rule(5) ) .
row( "\(y  \)", ans_rule(5), ans_rule(5), ans_rule(5),$y3 ) .
endtable().$ECENTER; 


###########################
#  Main text

BEGIN_PGML
Complete the table of values for [` y = [$f] `].
[@ AnswerFormatHelp("numbers") @]*

[@ $table @]***
END_PGML


############################

$showPartialCorrectAnswers = 1;

foreach my $i (0..3) {
  ANS( $answer[$i]->cmp() );
}

