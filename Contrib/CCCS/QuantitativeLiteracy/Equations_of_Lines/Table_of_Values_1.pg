###########################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",

  "PGML.pl",
  "PGcourse.pl",
"PGgraders.pl"
);

TEXT(beginproblem());



###########################
#  Setup

Context("Numeric");

$m=non_zero_random(-5,5);
$b=non_zero_random(-5,5);

$f = Formula("$m*x+$b")->reduce;

$x0 = random(-8,8);
do { $x1 = random(-8,8);} until ($x1 != $x0);
do{$x2 = random(-8,8);} until (($x2 != $x0) and ($x2 != $x1));
$y3 = random(-8,8);

$ans0 = $f->eval(x=>$x0);
$ans1 = $f->eval(x=>$x1);
$ans2 = $f->eval(x=>$x2);
$ans3 = Compute("($y3-$b)/$m");

@answer = ($ans3, $ans0, $ans1, $ans2);

$table = $BCENTER.begintable(5) .
row( "\(x  \)", $x0, $x1, $x2, ans_rule(5) ) .
row( "\(y  \)", ans_rule(5), ans_rule(5), ans_rule(5),$y3 ) .
endtable().$ECENTER;

#For Solution
$left = $y3-$b;


###########################
#  Main text

BEGIN_PGML
Complete the table of values for [` y = [$f] `].
[@ helpLink("numbers") @]*

[@ $table @]***
END_PGML


############################

$showPartialCorrectAnswers = 1;

foreach my $i (0..3) {
  ANS( $answer[$i]->cmp() );
}

############################
#  Solution

BEGIN_PGML_SOLUTION
Plug the given values into the equation [`y = [$f]`] to complete the table of values.

*First Column*

[`x = [$x0]`]

[`y = [$m]([$x0]) + [$b] = [$ans0]`]

*Second Column*

[`x = [$x1]`]

[`y = [$m]([$x1]) + [$b] = [$ans1]`]

*Third Column*

[`x = [$x2]`]

[`y = [$m]([$x2]) + [$b] = [$ans2]`]

*Fourth Column*

[`y = [$y3]`]

[`[$y3] = [$m]x + [$b]`]

[`[$left] = [$m]x`]

[`x = [$ans3]`]


END_PGML_SOLUTION

COMMENT('MathObject version. Uses PGML.');

ENDDOCUMENT();