#Product rule for exponents, positive exponents and random coefficients

Context("Numeric");

$a = random(1,9);
$b = random(2,9);
do {$c = non_zero_random(-3,3)} until abs($c) != 1;
$d = random(2,5);
#$f = Formula("($c*x^$b)*($d*x^$a)")->reduce();

$ab=$a+$b;
$cd=$c*$d;

Context("RationalFunction-Strict");

$ans = Formula("$cd*x^($ab)");


##############################################

TEXT(beginproblem());

BEGIN_PGML

