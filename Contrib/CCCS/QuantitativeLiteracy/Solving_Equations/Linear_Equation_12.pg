###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"answerHints.pl",

"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("Fraction");
$x = list_random('a','b','c','d','m','n','p','q','r','t','w','x','y','z');
Context()->variables->are($x => "Real");
Context()->noreduce('(-x)-y','(-x)+y');

$a = random(2, 12);
$lhs = 1-$a;
$ans = 0;

$equation=Fraction($x,$a);

Context("LimitedNumeric");

###########################
#  Main text

BEGIN_PGML
Solve the equation [`[$equation]=[$x]`].

[`[$x]=`] [_________________]{$ans}

END_PGML


############################
#  Solution

BEGIN_PGML_SOLUTION
First multiply both sides by [$a].

[``[$a] \cdot [$equation] = [$a] \cdot [$x]``]

[`[$x] = [$a][$x]`]

Then subtract [$a][$x] from both sides.

[`[$x] - [$a][$x] = 0`]

[`[$lhs][$x] = 0`]

Then divide both sides by [$lhs].

[`[$x] = 0 \div [$lhs]`]

[`[$x] = [$ans]`]
END_PGML_SOLUTION

COMMENT('MathObject version. Uses PGML.');

ENDDOCUMENT();