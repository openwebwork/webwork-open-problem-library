###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"answerHints.pl",

"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);


######################################
#  Setup
Context("Numeric");
$A = list_random('A','B','C','D');
$B = list_random('G','H','M','N');
$C = list_random('p','q','r','s');
$x = list_random('x','y','z');
$y = list_random('t','v','w');



Context()->variables->are($A=>'Real',
                          $B=>'Real', $x=>'Real',$y=>'Real',
                          $C=>'Real');

$ans = Formula("($C-$B*$y)/$A");


######################################
TEXT(beginproblem());

BEGIN_PGML

Solve the formula for [`[$x]`].

[`[$B][$y]+[$A][$x] = [$C]`];

[`[$x]=`][_______________]{$ans} [@ helpLink("formulas") @]*


END_PGML

##############################################

BEGIN_PGML_SOLUTION
Subtract [`[$B][$y]`] from both sides:

[`[$A][$x] = [$C] - [$B][$y]`]

Then divide both sides by [$A]:

[`[$x] = [$ans]`]
END_PGML_SOLUTION

ENDDOCUMENT();

