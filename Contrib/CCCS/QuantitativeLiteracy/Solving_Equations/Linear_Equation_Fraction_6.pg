###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"answerHints.pl",

"contextFraction.pl",
"PGML.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

###########################
#  Setup

Context("Fraction");

Context()->flags->set(requirePureFractions=>1);
Context()->flags->set(showMixedNumbers=>0);

$x = list_random('a','b','c','d','m','n','p','q','r','t','w','x','y','z');
Context()->variables->are($x => "Real");
Context()->noreduce('(-x)-y','(-x)+y');

$F = list_random(2, 3, 5);
$A = list_random(2, 3, 5);
do{$D = list_random(2, 3, 5);} until ($D != $F);
do {$E = list_random(2, 3, 5, 7, 11);} until (($E != $F) or ($E != $D));

$a = $A*$F;
$b = Fraction(1, $F);
$c = Fraction($F,$D);
$d = Fraction($E, $F*$D);

#For Solution
#Distribute
$af = $a*$F;
$left1 = Formula("$a*$b*$x - $c*$a")->reduce;
$lcd = abs($F*$D);
$left2 = Formula("$a*$b*$lcd*$x - $c*$a*$lcd")->reduce;
$right2 = $d*$lcd;
$rhs = $right2 + $c*$a*$lcd;
$lhs = $a*$b*$lcd;

Context("LimitedFraction");

Context()->flags->set(requirePureFractions=>1);
Context()->flags->set(showMixedNumbers=>0);
Context()->variables->are($x => "Real");
Context()->noreduce('(-x)-y','(-x)+y');


$ans = Fraction($E+$A*$F**3,$A*$F*$D);




###########################
#  Main text

BEGIN_PGML
Solve the equation:

[`[$a]([$b][$x]-[$c])=[$d]`]

Write your answer as an integer or fraction.

[`[$x]=`] [_________________]{$ans}

END_PGML


############################
#  Solution

BEGIN_PGML_SOLUTION
Distribute on the left side:

[`\frac{[$a]}{[$F]}[$x] - \frac{[$af]}{[$D]} = [$d]`]

[`[$left1] = [$d]`]

A common denominator is [$lcd].  We can clear the fractions by multiply every term by a common denominator.

[`[$lcd] ( [$left1] ) = [$lcd] \cdot [$d]`]

[`[$left2] = [$right2]`]

[`[$lhs][$x] = [$rhs]`]

[`[$x] = \frac{[$rhs]}{[$lhs]} = [$ans]`]

END_PGML_SOLUTION

COMMENT('MathObject version. Uses PGML.');

ENDDOCUMENT();