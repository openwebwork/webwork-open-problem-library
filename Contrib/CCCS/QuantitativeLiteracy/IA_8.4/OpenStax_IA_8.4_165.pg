DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "contextFraction.pl",
  "contextLimitedRadical.pl",
  "PGcourse.pl",
  "parserRoot.pl",
);

######################################

TEXT(beginproblem());
Context("Numeric");

#Part A
$a = list_random(2, 3, 5, 7);
$b = non_zero_random(-10, 10);
$c = non_zero_random(-10, 10);
$d = Compute("$b+$c");

#Part B
$n = random(3, 6);
$b2 = non_zero_random(-10, 10);
do{
$c2 = non_zero_random(-10, 10);
}until($c2 != -$b2);

$d2 = Compute("$c2 + $b2");

Context("LimitedRadical");

$ans1 = Formula("$d*sqrt($a)");
$ans2 = Formula("$d2*root($n,x)");

##########################################


#####################################################

BEGIN_PGML

Simplify each radical.

Use *root(n, x)* to enter [`\sqrt[n]{x}`]. For example: [`\sqrt[3]{2} =`]  *root(3, 2)*.

  (a)  [`` [$b]\sqrt{[$a]} + [$c]\sqrt{[$a]} = ``] [_____________]{$ans1}
  
  (b)  [`` [$b2]\sqrt[[$n]]{x} + [$c2]\sqrt[[$n]]{x} = ``] [_____________]{$ans2}

END_PGML

############################################################


BEGIN_PGML_SOLUTION
(a)  [`` [$b]\sqrt{[$a]} + [$c]\sqrt{[$a]} = ([$b]+[$c])\sqrt{[$a]} = [$ans1]``]
  
  (b)  [`` [$b2]\sqrt[[$n]]{x} + [$c2]\sqrt[[$n]]{x} = ([$b2] + [$c2])\sqrt[[$n]]{x} = [$ans2]``]

END_PGML_SOLUTION

######################################



ENDDOCUMENT();
