###########################
#  Setup

Context("Numeric");
Context()->variables->add(t => 'Real');


$a=non_zero_random(1,10,1);

$b=random(1,10,1);
$use=$b**2;

$f=Formula("x+$a sqrt(x)")->reduce;
$out=$f->eval(x=>$use);

$fprime=Formula("1+$a/(2sqrt(x))")->reduce;
$fprimeata=$fprime->eval(x=>$use);

$ans1=1/$fprimeata;

