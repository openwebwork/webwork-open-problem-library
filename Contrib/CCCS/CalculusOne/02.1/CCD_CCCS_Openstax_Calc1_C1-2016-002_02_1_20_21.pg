###########################
#  Setup

Context("Numeric");

# allowing answers that are within 1%
#Context()->flags->set(tolerance => 0.01);

# having answers to 4 decimal places AND reduced
#Context()->{format}{number} = "%.4f#"; 

# adding t as a variable 
Context()->variables->add(t => 'Real');

$a = random(300,600,1100);
$b = random(70,80,0.1);

$t0 = random(7, 10, 1);

# the formula for the function
$f = Formula("$a+$b*t-4.9*t^2")->reduce(); 

# formula evaluated at t0
$y0 = $f->eval(t=>$t0);

# the derivative of the function
$df = $f->D('t');

# the derivative of the function evaluated at t0
$df_t0=$df->eval(t=>$t0);

# the time interval set up
$t1= $t0 - 0.01;
$t2 = $t0 + 0.01;
$t3 = $t0 + 0.001;
$t4 = $t0 - 0.001;

# the answers of the table as an array. 
@answer = ();
for $i (0..3) {
# the first interval
  if ($i == 0) {
     $y1 = $f->eval(t=>$t0);
     $y2 = $f->eval(t=>$t2);
     $delta_y_temp =  $y1 - $y2;
     $delta_x_temp = $t0 - $t2;
     $answer[$i] = $delta_y_temp / $delta_x_temp; 
 } elsif ($i == 1) {
    $y1 = $f->eval(t=>$t3);
    $y2 = $f->eval(t=>$t0);
    $delta_y_temp =  $y1 - $y2;
    $delta_x_temp = $t3 - $t0;
    $answer[$i] = $delta_y_temp / $delta_x_temp;
 } elsif ($i == 2) {
    $y1 = $f->eval(t=>$t0);
    $y2 = $f->eval(t=>$t1);
    $delta_y_temp =  $y1 - $y2;
    $delta_x_temp = $t0 - $t1;
    $answer[$i] = $delta_y_temp / $delta_x_temp;
 } else {
    $y1 = $f->eval(t=>$t4);
    $y2 = $f->eval(t=>$t0);
    $delta_y_temp =  $y1 - $y2;
    $delta_x_temp = $t4 - $t0;
    $answer[$i] = $delta_y_temp / $delta_x_temp;
 }
}

# the derivative of the function evaluated at t0
$answer[4] = $df_t0;

#this sets up a table that is 2 x 4 where the top row is static and first column is dynamic intervals
$table = $BCENTER.begintable(5) .
row( "Time interval", "Average Velocity") .
row( "[$t0, $t2]", ans_rule(8)).
row("[$t0, $t3]", ans_rule(8)).
row("[$t1, $t0]", ans_rule(8)).
row("[$t4, $t0]", ans_rule(8)).
endtable().$ECENTER; 


