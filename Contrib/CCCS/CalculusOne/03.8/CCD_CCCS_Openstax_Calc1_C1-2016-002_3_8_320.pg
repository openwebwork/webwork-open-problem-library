$a=list_random(-6, 6);
$i=0;
$o=sin(pi/$a);


$f=Formula("sin^(-1)(x)+sin^(-1)(y)")->reduce;
##1/sqrt(1-x**2)+1/sqrt(1-y**2)=0
##sqrt(1-x**2)dydx=-1*sqrt(1-y**2)
##dydx=-1*sqrt(1-y**2)/sqrt(1-x**2)

$ans1=Formula("y=-1*sqrt(1-(1/2)^2)x+$o");
