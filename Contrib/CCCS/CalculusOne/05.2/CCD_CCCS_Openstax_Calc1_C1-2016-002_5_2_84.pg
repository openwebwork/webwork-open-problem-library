###########################
#  Setup
$k1=random(1,3);
$k2=random(1,3);
$k3=random(1,3);
$k4=random(1,3);
$k5=random(1,3);


$h1=random(1,3);
$h2=random(0,1);
$h3=random(1,3);
$h4=random(1,3);
$h5=random(0,1);

$a1=random(-2,2);
$a2=$a1+$k1;
$a3=$a2+$k2;
$a4=$a3+$k3;
$a5=$a4+$k4;
$a6=$a5+$k5;


$b1=random(0,2);
$b2=$b1+$h1;
$b3=$b2+$h2;
$b4=$b3+$h3;
$b5=$b4+$h4;
$b6=$b5+$h5;

$I=Interval("[$a1,$a6]")->reduce();


$L=Formula("$b1*$k1+$b2*$k2+$b3*$k3+$b4*$k4+$b5*$k5")->reduce();
$R=Formula("$b2*$k1+$b3*$k2+$b4*$k3+$b5*$k4+$b6*$k5")->reduce();
$AV=Formula("($L+$R)/2")->reduce();

$ans1=$L;
$ans2=$R;
$ans3=$AV;
