#  Setup
Context("Numeric");

$f_1=random(-5,5,1);
$f_2=random(-5,5,1);
$f_3=random(-5,5,1);
$f_4=non_zero_random(-5,5,1);

$g_1=random(-7,7,1);
$g_2=non_zero_random(-7,7,1);
$g_3=random(-7,7,1);
$g_4=random(-7,7,1);

$fp_1=random(-5,5,1);
$fp_2=random(-5,5,1);
$fp_3=random(-5,5,1);
$fp_4=random(-5,5,1);

$gp_1=random(-10,10,1);
$gp_2=random(-10,10,1);
$gp_3=random(-10,10,1);
$gp_4=random(-10,10,1);

$ans1=Compute(1*($fp_1)+$f_1+4*($gp_1));

Context("Fraction");
$ans2=Compute( "(($fp_2*$g_2)-($f_2*$gp_2))/(($g_2)**2)")->reduce;
$ans3=Compute(2+($fp_3*$g_3)+($f_3*$gp_3));
$ans4=Compute(" (-1/16) + (($gp_4*$f_4)-($g_4*$fp_4))/(($f_4)**2) ")->reduce;


