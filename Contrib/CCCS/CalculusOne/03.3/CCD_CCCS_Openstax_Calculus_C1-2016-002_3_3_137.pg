#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGchoicemacros.pl",,
"parserAssignment.pl",
"AnswerFormatHelp.pl",
"PGML.pl",
"PGcourse.pl",
"contextLimitedPoint.pl",
);


TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$refreshCaschedImages = 0;

##########################
#  Setup
Context("Numeric");

##random coeffs
$a=random(1,4,1);
$b=random(1,5,1);
$c=random(1,7,1);
$d=random(1,4,1);


##x-coordinate of point P(x,y) on graph of f(x)##
$x0=non_zero_random(-1,1,1);

##formula for f(x) and f'(x)##
Context()->noreduce('(-x)-y','(-x)+y');
$f = Formula("$a*x**(3)+$b*x**(2)-$c*x-$d")->reduce;
$fp = $f->D('x');

##y-coord of P(x,y) on graph of f(x), slope of tan line at P(x,y), y-int of tan line## 
$y0 = $f->eval(x=>$x0);
$fp_x0=$fp->eval(x=>$x0);
$yint=$y0-$fp_x0*$x0;

##Folrmula for tangent line at the point P(x, y)
$tanline=Formula("$fp_x0*x+$yint")->reduce;

#################################
##Main text##

BEGIN_PGML

Find the equation of the tangent line to the graph of [`\displaystyle f(x)=[$f]`] at  `x=[$x0]`.

[`y=`] [_______________]{$tanline} [@ AnswerFormatHelp("formulas") @]* 


END_PGML

