#  Setup

Context("Numeric");
Context()->variables->add(u => 'Real');

$a=non_zero_random(20,35,1);
$b=non_zero_random(4,12,1);

$d=random(10,20,1);
$c=$d+random(5,15,1);

$t=($c-$d)/$a;
$ran=$b*$t;

$ans=($t*$b**2+$c*$a)/sqrt(($b*$t)**2+($c)**2);


