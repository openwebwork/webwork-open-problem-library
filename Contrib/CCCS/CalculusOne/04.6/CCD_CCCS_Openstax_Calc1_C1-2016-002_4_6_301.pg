TEXT(beginproblem());

$showPartialCorrectAnswers = 1;


##########################
#  Setup

$a=non_zero_random(0,5,1);
$b=non_zero_random(-5,5,1);
$c=Compute("(2*$a/3)^3-$a(2*$a/3)^2+$b");
$d=Compute("($a/3)^3-$a($a/3)^2+$b");
$e=Compute("2*$a/3");
$f=Compute("$a/3");

$fun=Formula("cos(x)/($a*x)")->reduce;


Context("Point");
$max=Point(0, $b);
$min=Point($e, $c);
$inf=Point($f, $d);

Context("Interval");
$inc=Compute("(-infinity, 0),($e, infinity)");
$dec=Compute("(0, $e)");
$conup=Compute("($f, infinity)");
$condown=Compute("(-infinity, $f)");

$asymp=Compute("0");


$gr1 = init_graph(-6,-6,6,6,
axes=>[0,0],
grid=>[6,6],
size=>[600,600]
);

$gr2 = init_graph(-6,-6,6,6,
axes=>[0,0],
grid=>[6,6],
size=>[600,600]
);

$gr3 = init_graph(-6,-6,6,6,
axes=>[0,0],
grid=>[6,6],
size=>[600,600]
);

$gr4 = init_graph(-6,-6,6,6,
axes=>[0,0],
grid=>[6,6],
size=>[600,600]
);

add_functions($gr1, "cos(x)/($a*x) for x in <-8,8>". 
  " using color:blue and weight:3");

add_functions($gr2, "2/($a*x) for x in <-8,8>" . 
  " using color:blue and weight:3");

add_functions($gr3, "sin(x)/($a*x)  for x in <-8,8>" . 
  " using color:blue and weight:3");

add_functions($gr4, "-2/($a*x)+$b for x in <-8,8>" . 
  " using color:blue and weight:3");

Context("Numeric");
$popup1 = PopUp(
  ["?","A","B", "C", "D"], "A",
);

($gr1->fn)[0]->steps(200);
($gr2->fn)[0]->steps(200);
($gr3->fn)[0]->steps(200);
($gr4->fn)[0]->steps(200);

$in=time();
$gr1->gifName($gr1->gifName()."$in");
$gr2->gifName($gr2->gifName()."$in");
$gr3->gifName($gr3->gifName()."$in");
$gr4->gifName($gr4->gifName()."$in");


#################################
#  Main text

BEGIN_PGML

