###########################
#  Setup
Context("Numeric");
Context()->variables->add(u => 'Real');

$a1=1.1;
$a2=1.01;
$a3=1.00001;
$b1=0.9;
$b2=0.99;
$b3=0.99999;

$a = non_zero_random(-3,4,1);
$c = non_zero_random(-3,5,1);

$f = Formula("x^2+$a*x+$c")->reduce;
$df = Formula("2x+$a");

$fone=$f->eval(x=>1);

$m=$df->eval(x=>1);
$b=$f->eval(x=>1) - $df->eval(x=>1)*1;

$fb1= $f->eval(x=>$b1);
$fb2= $f->eval(x=>$b2);
$fa1= $f->eval(x=>$a1);
$fa2= $f->eval(x=>$a2);

$ans = Formula("$m*x+$b");

