##Ellis and Gullick: section 8.1-8.2
##Authored by Zig Fiedorowicz 5/19/2000
DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);



$showPartialCorrectAnswers = 0;


$a = random(2,9,1);
$b = random(2,5,1);
$ab = $a*$b;
$ab2 = 2*$ab;

$questStr1 = EV2("\(\lim_{x\to $a^+} f(x)\) and \(\lim_{x\to $a^-} f(x)\) both exist and are finite, but they are not equal.");
$ansStr1 = EV2("\(f(x)=\left\lbrace\begin{array}{ll}$b x &\mbox{if }x<$a\\ 0   &\mbox{if }x=$a\\ $b x - $ab2 &\mbox{if }x>$a \\ \end{array}\right.\)");
$questStr2 = EV2("The graph of \(y=f(x)\) has vertical tangent line at \(($a,f($a))\)");
$ansStr2 = EV2("\(f(x)=\sqrt[3]{x- $a}\)");
$questStr3 = EV2("\(\lim_{x\to $a^-}f(x)=-\infty\).");
$ansStr3 = EV2("\(f(x)=\frac{1}{x- $a}\)");
$questStr4 = EV2("\(\lim_{x\to $a^+}f(x)\) exists but \(\lim_{x\to $a^-}f(x)\) does not.");
$ansStr4 = EV2("\(f(x)=\left\lbrace\begin{array}{ll}\cos\left(\frac{1}{x- $a}\right) &\mbox{if }x<$a\\ 0   &\mbox{if }x=$a\\ $b x + $ab2 &\mbox{if }x>$a\\ \end{array}\right.\)");
$questStr5 = EV2("\(\lim_{x\to $a}f(x)=\infty\).");
$ansStr5 = EV2("\(f(x)=\frac{1}{(x- $a)^2}\)");
$questStr6 = EV2("\(\lim_{x\to $a}f(x)\) exists but \(f\) is not continuous at $a.");
$ansStr6 = EV2("\(f(x)=\left\lbrace\begin{array}{ll}$b x &\mbox{if }x<$a\\ 0   &\mbox{if }x=$a\\ $ab2 - $b x &\mbox{if }x>$a\\ \end{array}\right.\)");

@questions =( $questStr1,$questStr2,$questStr3,$questStr4,$questStr5,$questStr6);
@answers =( $ansStr1,$ansStr2,$ansStr3,$ansStr4,$ansStr5,$ansStr6);
@shuffle = &shuffle(scalar(@questions));

TEXT(&beginproblem);

BEGIN_TEXT
$BR
Shown below are six statements about functions. Match each statement to one of
the functions shown below which BEST matches that statement.
$PAR

END_TEXT

TEXT(
&match_questions_list(@questions),
&OL(@answers[@shuffle])
);


&ANS( str_cmp([ @ALPHABET[&invert(@shuffle)] ] ) );




ENDDOCUMENT();




