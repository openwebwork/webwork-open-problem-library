TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
## install_problem_grader(~~&std_problem_grader);

$a1 = random(.20,.30,.01);
$a2 = 1-$a1;
$a3 = random(.40,.50,.01);
$a4 = random(.15,.25,.01);
$a5 = 1-($a3+$a4);



BEGIN_TEXT
$PAR 
The distributions of X and Y are described below.  
If X and Y are independent, determine the joint 
probability distribution of X and Y.  
$PAR
$BCENTER
\{begintable(3)\}
\{row("X", "0", "1")\}
\{row("P(X)", $a1, $a2)\}
\{endtable()\}
$PAR
\{begintable(4)\}
\{row("Y", "1", "2","3")\}
\{row("P(Y)", $a3, $a4, $a5)\}
\{endtable()\}

$ECENTER
$PAR
\{begintable(3)\}
\{row(" ", "X", " ")\}
\{row("Y ", "0", "1")\}
\{row("1", ans_rule(5), ans_rule(5))\}
\{row("2", ans_rule(5), ans_rule(5))\}
\{row("3", ans_rule(5), ans_rule(5))\}
\{endtable()\}




END_TEXT


ANS(num_cmp($a1*$a3));
ANS(num_cmp($a2*$a3));
ANS(num_cmp($a1*$a4));
ANS(num_cmp($a2*$a4));
ANS(num_cmp($a1*$a5));
ANS(num_cmp($a2*$a5));



