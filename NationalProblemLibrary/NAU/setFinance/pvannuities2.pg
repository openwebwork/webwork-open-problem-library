##KEYWORDS('percent')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGasu.pl"
);

TEXT(&beginproblem);

$V = random(20,40,1)*1000;
$b = random(5,16,1);

@m = (12,4,2,1);
@adj = ("monthly","quarterly","semi-annual","yearly");
@adj2 = ("monthly","quarterly","semi-annually","yearly");
$ind = random(0,3,1);
$zahl = $m[$ind];
$readj = $adj[$ind];
$readj2 = $adj2[$ind];


$c = random(3,15,1);
$r = $c/100;

TEXT(EV2(<<EOT));
Find the $readj payment needed to pay off a loan of  $DOLLAR$V amortized
at $c$PERCENT compounded $readj2 for $b years.
$BR

$BR
$readj payment  = $DOLLAR \{ans_rule(20)\}


EOT

$i = $r/$zahl;
$n = $b*$zahl;
$P = $V*((1-(1+$i)**(-$n))/$i)**(-1);

&ANS(num_cmp($P));


ENDDOCUMENT();        # This should be the last executable line in the problem.
