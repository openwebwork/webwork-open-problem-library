DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
);

# COMMENT('');

Context("Numeric");

$c = random(1,2,1);
$d = random(1,2,1);

$cow = "cows";
$cow = "cow" if ($c==1); 
$duck = "ducks";
$duck = "duck" if ($d==1); 

$ans1 = Formula("$c");
$ans2 = Formula("$d");

$eyes = 2*($c+$d);
$legs = 4*$c + 2*$d;

TEXT(beginproblem());
Context()->texStrings;

BEGIN_TEXT

The animals in the garden have $legs legs and $eyes eyes. How many cows and ducks do we have?
$BR
There are \{ans_rule(20)\} cow(s). 
There are \{ans_rule(20)\} duck(s). 

END_TEXT

Context()->normalStrings;

ANS( $ans1->cmp() );
ANS( $ans2->cmp() );

ENDDOCUMENT();
