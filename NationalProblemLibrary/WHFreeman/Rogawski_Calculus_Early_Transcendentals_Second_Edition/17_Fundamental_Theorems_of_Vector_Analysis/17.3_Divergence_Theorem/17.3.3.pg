## DBsubject('Calculus')
## DBchapter('Fundamental Theorems of Vector Analysis')
## DBsection('Divergence Theorem')
## KEYWORDS('calculus')
## TitleText1('Calculus: Early Transcendentals')
## EditionText1('2')
## AuthorText1('Rogawski')
## Section1('17.3')
## Problem1('3')
## Author('JustAsk - Kobi Fonarov')
## Institution('W.H.Freeman')

DOCUMENT();

loadMacros("PG.pl","PGbasicmacros.pl","PGanswermacros.pl");
loadMacros("Parser.pl");
loadMacros("freemanMacros.pl");
loadMacros("PGauxiliaryFunctions.pl");
loadMacros("PGgraphmacros.pl");
loadMacros("PGchoicemacros.pl");

TEXT(beginproblem());

$context = Context();
$context->variables->add(y=>'Real');
$context->variables->add(z=>'Real');

$a=random(1,9);
$b=random(1,9);
$c=random(1,9);
$d=random(1,9);

$fi=Formula("$a*x-2*z*x^{$b}")->reduce();
$fj=Formula("$c*z-x*y")->reduce();
$fk=Formula("z^{$d}*x^2")->reduce();

$fitag=Formula("$a-$b*2*z*x^{$b-1}")->reduce();
$fjtag=Formula("-x")->reduce();
$fktag=Formula("$d*z^{$d-1}*x^2")->reduce();

$answer=Formula("$fitag+$fjtag+$fktag")->reduce();

$curve="\mathcal{C}";
$domain="\mathcal{D}";
$surf="\mathcal{S}";
$FF="\mathbf{F}";
$curl="\text{curl}";
$ii="\mathbf{i}";
$jj="\mathbf{j}";
$kk="\mathbf{k}";
$dive="\text{div}";
Context()->texStrings;

BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "17.3","3") \}
$PAR
Compute the divergence of the vector field: $PAR
\[$FF = \left< $fi,$fj,$fk\right>\]
\($dive ($FF) = \) \{ans_rule()\} $PAR
$PAR

END_TEXT 

ANS($answer->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL $PAR
\[$dive ($FF) =\frac{\partial }{\partial x}($fi)+\frac{\partial }{\partial y}($fj)+\frac{\partial }{\partial z}($fk)=
\]\[($fitag)+($fjtag)+($fktag)=$answer
\]
END_SOLUTION

ENDDOCUMENT();
