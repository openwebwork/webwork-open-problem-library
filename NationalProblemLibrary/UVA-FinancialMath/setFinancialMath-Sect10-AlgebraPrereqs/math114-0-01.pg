loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a=  random(7000,10000,1000);
$b=  random(2000,4000,1000);

# Present the text.
TEXT(EV2(<<EOT));
Suppose that Alice has $a dollars and Bill has $b dollars.
How much more money does Alice have than Bill?
$BR
Answer = \{ &ans_rule(10) \}
EOT

$ans = $a - $b;
ANS(num_cmp($ans));


