## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   Plane through point parallel to given plane
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

## Grab a point @p and a normal vector @n
@p = ();
@n = ();
for ($i=0; $i < 3; $i++)
{
    $p[$i] = random(-10,10,1);
    $n[$i] = non_zero_random(-10,10,1);
}


## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Find an equation of the plane parallel to the plane 
\( $n[0] x + $n[1] y + $n[2] z = \{ $p[0] + $p[1] + $p[2] + 5\} \)
$BR

which passes through the point ($p[0], $p[1], $p[2]).
$PAR
Give your answer in the form \( a x + b y + c z = d \) 
(with \( a = \{abs($n[0])\} \)).
$BR
a = \{ans_rule()\}$BR
b = \{ans_rule()\}$BR
c = \{ans_rule()\}$BR
d = \{ans_rule()\}$BR
END_TEXT

if ($n[0] > 0)
{
    ANS(std_num_cmp($n[0]));
    ANS(std_num_cmp($n[1]));
    ANS(std_num_cmp($n[2]));
    ANS(std_num_cmp($n[0]*$p[0] + $n[1]*$p[1] + $n[2]*$p[2]));
}
else
{
    ANS(std_num_cmp(- $n[0]));
    ANS(std_num_cmp(- $n[1]));
    ANS(std_num_cmp(- $n[2]));
    ANS(std_num_cmp(- $n[0]*$p[0] - $n[1]*$p[1] - $n[2]*$p[2]));
}
ENDDOCUMENT();




