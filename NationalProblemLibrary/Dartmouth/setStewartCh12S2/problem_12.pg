## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   Series with constant terms
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

$a = non_zero_random(-10,10);
$b =random(2,15);
$c = non_zero_random(-10,10);
$d =random(2,15);

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
   Suppose that the nth partial sum of the series \(\sum_{n=1}^\infty a_n \) is
    \(s_n = \frac{$a n + $b}{$c n + $d} \).

$BR
Find a (not very pretty) expression for \(a_n\): \{ans_rule(60)\}$BR

What is the value of \(\sum_{n=1}^\infty a_n \): \{ans_rule(40)\}


$PAR
END_TEXT

    ANS(fun_cmp("(($a*n+$b)*($c(n-1)+$d) - ($a*(n-1)+$b)*($c*n+$d))/( ($c*n+$d)*($c(n-1)+$d) )", vars=>['n']                ));
    ANS(num_cmp($a/$c));

ENDDOCUMENT();




