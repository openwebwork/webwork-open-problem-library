DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

## Lots of set up goes here
@PQ = (2,3,3);
@PR = (-1,-1,-1);
@PS = (6, -2, 2);
@P=(random(-5,5), random(-5,5),random(-5,5));
$Q[0] = $P[0] + $PQ[0];
$Q[1] = $P[1] + $PQ[1];
$Q[2] = $P[2] + $PQ[2];
$R[0] = $P[0] + $PR[1];
$R[1] = $P[1] + $PR[2];
$R[2] = $P[2] + $PR[2];
$S[0] = $P[0] + $PS[0];
$S[1] = $P[1] + $PS[1];
$S[2] = $P[2] + $PS[2];

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Find the volume of the parallelopiped with adjacent edges PQ, PR, PS where 
$BR
P($P[0], $P[1], $P[2]), 
Q($Q[0], $Q[1], $Q[2]),
R($R[0], $R[1], $R[2]),
S($S[0], $S[1], $S[2]).
$BR
\{ans_rule()\}
$PAR
END_TEXT

    ANS(num_cmp(  abs(dot_product(@PQ, cross_product(@PR,@PS))) ));
ENDDOCUMENT();




