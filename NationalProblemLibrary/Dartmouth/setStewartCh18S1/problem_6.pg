## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   Second Order Constant Coefficient ODE (double real root)
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

## Lots of set up goes here
$root = non_zero_random(-10,10);
$kappa1 = random(1,10);
$kappa2 = random(1,10);

$c1 = $kappa1;
$c2 = ($kappa2 - $root*$kappa1);


## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Find the solution to initial value problem
\[
    \frac{d^2y}{dt^2} - \{2*$root\}\frac{dy}{dt} + \{$root*$root\}y  = 0, \ \ \
    y(0) = $kappa1, y'(0) = $kappa2
\]
The solution is \{ans_rule(60)\}.
$PAR
END_TEXT

ANS(fun_cmp("$c1*exp($root*t) + $c2*t*exp($root*t)", vars=> ['t']));

ENDDOCUMENT();




