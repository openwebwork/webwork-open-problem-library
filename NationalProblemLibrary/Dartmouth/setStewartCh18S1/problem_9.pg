## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   Second Order Constant Coefficient ODE (distinct real roots)
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           );
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;


$alpha = random(1,7);
$beta = random(1,7);

$kappa1 = random(1,10);
$kappa2 = random(1,10);
$pi = acos(-1);

$c1 = $kappa1;
$c2 = $kappa2/exp(($pi*$alpha)/(2*$beta));

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Find the solution to the boundary value problem:
\[
    \frac{d^2y}{dt^2} - \{2* $alpha\}\frac{dy}{dt} + \{$alpha**2 + $beta**2\}y = 0,\ \ \ 
    y(0) = $kappa1, y(\pi/\{2*$beta\}) = $kappa2
\]
$BR
The solution is \{ans_rule(60)\}.

$PAR
END_TEXT

    ANS( fun_cmp("$c1*exp($alpha * t) * cos($beta * t) + $c2*exp($alpha * t) * sin($beta * t)",vars=>['t']   ) );

ENDDOCUMENT();




