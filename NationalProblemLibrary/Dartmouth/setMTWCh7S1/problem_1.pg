## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   Green's Theorem
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;

## Lots of set up goes here
$a = random( 1, 20, 1 );
$b = random( 1, 20, 1 );

$a_y = preformat($a,"y");
$b_x = preformat($b,"x");

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Let C be the positively oriented circle \( x^{2} + y^{2} = 1 \). Use Green's Theorem to
evaluate the line integral \( \int_{C} $a_y \, dx + $b_x \, dy \).
  $PAR
\{ans_rule(40)\}


$PAR
END_TEXT

ANS( std_num_cmp($PI * ($b - $a)));

ENDDOCUMENT();




