## -*- perl -*- ##
## Line above puts emacs in perl mode
##
## Description  
##   Parametrized surfaces
## EndDescription

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "Dartmouthmacros.pl");
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;

## Lots of set up goes here
$a = random(2,8,1);
$b = $a + 1;
$c = random(2,8,1);



@answers = ('ellipsoid','sphere','paraboloid','hyperboloid','None of these');
## Choose a permuation fixing 5
@permutation = (NchooseK(4,4),4);

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
$BR
Express the surface
\[ x = $a\cos\theta \sin\phi, y = $b\sin\theta \sin\phi, z = $c\cos\phi\]
as a level surface \(f(x,y,z) = \{$a*$a*$b*$b*$c*$c\}\),
$BR
\(f(x,y,z) = \) \{ans_rule(50)\}
$PAR
This surface is a \{ans_rule(10)\}
$PAR
END_TEXT
TEXT(OL(@answers[@permutation]));

@inverted_alphabet = @ALPHABET[invert(@permutation)];

ANS(multivar_function_cmp("$c*$c*$b*$b*x*x + $c*$c*$a*$a*y*y + $a*$a*$b*$b*z*z",3));
## The answer is $answers[1]
ANS(std_str_cmp($inverted_alphabet[0]));

ENDDOCUMENT();




