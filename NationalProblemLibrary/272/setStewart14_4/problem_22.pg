DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           );
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 0;

# compute sin( k pi/2) and cos( k pi/2) given k
sub mymod {
 my $in = shift;
 $in = $in % 4;
 $in = $in + 4 if($in<0);
 return($in);
}

sub sinf {
 my $in = shift;
 my @l = (0,1,0,-1);
 return($l[mymod($in)]);
}
sub cosf {
 my $in = shift;
 my @l = (1,0,-1, 0);
 return($l[mymod($in)]);
}
 

## Lots of set up goes here
$a = random(1,9);
$b = random(1,9);

##f(x,y) = cos(ax)cos(by)
$k0 = non_zero_random(-3,3);
$k1 = non_zero_random(-3,3);


$ax = nicestring([$a], ["x"]);
$by = nicestring([$b], ["y"]);

$k0_pi_2 = nicestring([$k0], ['\pi/2']);
$k1_pi_2 = nicestring([$k1], ['\pi/2']);

$z0 = cosf($a*$k0) * cosf($b*$k1);

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
Find the equation of the tangent plane to the surface
\(z = \cos($ax) \cos($by) \)
at the point \( ($k0_pi_2, $k1_pi_2, $z0) \).
$BR$BR
    \( z = \) \{ans_rule(80)\}
END_TEXT

$ans = nicestring([$z0, -$a*sinf($a*$k0)*cosf($b*$k1), -$b*cosf($a*$k0)*sinf($b*$k1)], ['', FEQ("(x-$k0*pi/2)"), FEQ("(y-$k1*pi/2)")]);

ANS(fun_cmp($ans, vars=>2));

ENDDOCUMENT();




