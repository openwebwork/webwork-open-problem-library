#####################################################################

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl",
  "parserVectorUtils.pl",
);
########################################################################

$showPartialCorrectAnswers = 1;

TEXT(beginproblem);

#####################################################################

Context('Vector');

$a = random(1,4,1);
$b = random(5,10,1);
$c = random(2,15,1);

$a1 = Vector("<-1,1,2>");
$b1 = Vector("<-$a,$b,$c>");

$ab = $a1 . $b1;

$an = norm($a1);

$an1 = Compute("$ab/$an");
$an2 = Compute("($ab/(($an)^2))$a1");

Context('Numeric');
$ans1 = Compute("$an1");
Context('Vector');
$ans2 = Compute("$an2");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the scalar and vector projections of \(\mathbf{b}\) onto \(\mathbf{a}\), where \(\mathbf{a} = \langle -1,1,2\rangle\) and \(\mathbf{b} = \langle -$a, $b, $c\rangle\).
$HR
$BBOLD 1. $EBOLD \( \textrm{comp}_{\mathbf{a}}\mathbf{b}= \) \{ ans_rule(20) \} $PAR
$BBOLD 2. $EBOLD \(\textrm{proj}_{\mathbf{a}}\mathbf{b} = \) \{ ans_rule(20) \}
$HR
END_TEXT
Context()->normalStrings;

#####################################################################

Context('Numeric');
ANS(($ans1)->cmp());
Context('Vector');
ANS(($ans2)->cmp());

########################################################################

ENDDOCUMENT();        # This should be the last executable line in the problem.