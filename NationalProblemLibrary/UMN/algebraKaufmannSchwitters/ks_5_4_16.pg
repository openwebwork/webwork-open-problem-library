########################################################################

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

TEXT(beginproblem());

########################################################################

Context("Numeric");

$a = Compute("3");
$b = list_random(5,7);
$c = list_random(10, 11, 13);

$ans1 = Compute("1");
$ans2 = Compute("$a*$c");
$ans3 = Compute("1");
$ans4 = Compute("$a*$b");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Find the product
\[
 \sqrt{$a} \left( \sqrt{$c} + \sqrt{$b}  \right)
\]
and express your answer in the form \( A \sqrt{B} + C \sqrt{D}, \) \(A\), \(B\), \(C\), and \(D\) are all integers and \( B > D. \)
$PAR
Answer: \(A =\) \{ans_rule(15)\}, \(B =\) \{ans_rule(15)\}, \(C =\) \{ans_rule(15)\}, and \(D =\) \{ans_rule(15)\}
$HR
END_TEXT
Context()->normalStrings;

########################################################################

ANS( $ans1->cmp );
ANS( $ans2->cmp );
ANS( $ans3->cmp );
ANS( $ans4->cmp );

ENDDOCUMENT();        