DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
);

TEXT(beginproblem());
$showpartialcorrectanswers = 1;

$a = random(1, 4);
$b = random(3, 8);
$c = random(2, 7);
$d = random(3, 9);
$f = random(1, 6);
$g = random(4, 12);
$r1 = random(1, 5);
$r2 = random(-7,-1);
$h1 = $a*(($r1)**2) -$b*($r1) +$c;
$dh1 = 2*$a*$r1 - $b;
do {$g = random(4, 12) } until ($d*(($r1)**2) + $f*($r1) != $g );
$l1 = $d*(($r1)**2) + $f*($r1) - $g;
$dl1 = 2*$d*$r1 + $f;

$num = nicestring([$a, -$b, $c]);
$den = nicestring([$d, $f, -$g]);

BEGIN_TEXT
Let
\[f(x) =  \frac{$num}{$den}. \]
Evaluate \(f'(x)\) at \(x = $r1\).
$BR
$BR
\( f'($r1) \) = \{ans_rule(50) \}
END_TEXT

ANS(num_cmp("(($l1)*($dh1) - ($h1)*($dl1))/($l1)^2"));


ENDDOCUMENT();
