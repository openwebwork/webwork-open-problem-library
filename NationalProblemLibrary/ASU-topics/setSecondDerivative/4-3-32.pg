#DESCRIPTION
#KEYWORDS('second derivative')
#  
#ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl");

$a = non_zero_random(-8,8,1);
$b = non_zero_random(-8,8,1);
$c = random(2,5,1);
while( ($b)**2 == 1 )
{
    $b = non_zero_random(-8,8,1);
}
while( ($a)**2 == 1 )
{
    $a = non_zero_random(-8,8,1);
}
$a2 = 2*$a;
$bc = ($b*(1/$c -1)/$c);
$ce = 1/$c -2;

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

BEGIN_TEXT
Find \(g''(x)\) for
\( g(x) = $a x^2 ? {$b} x^{1/$c}\).
$PAR
\(g''(x)\) = \{ans_rule(35)\}

END_TEXT


ANS( fun_cmp( "$a2 + $bc*x**$ce" ) );


ENDDOCUMENT();        # This should be the last executable line in the problem.
