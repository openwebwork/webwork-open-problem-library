$a = random(-5,-2);
$b = random(1, 5);

$trms = random(20,50,10);


BEGIN_TEXT
Find the following partial sum,
$BR$BR
\(\displaystyle \sum_{n=0}^{$trms} ($b $a n) =\)
 \{ans_rule(40)\}
END_TEXT


ANS(num_cmp("($trms+1) *(2*$b+$trms*$a)/2"));

