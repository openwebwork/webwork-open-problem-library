##SC section 3.7 prob 25
## logarithmic differentiation

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

$n = random(2,8,1);
$x = random(2,4,1);
$e = 2.718281828;

$deriv1 = $n* $e**(-$x);
$funct1 = "$n / x";

TEXT(EV2(<<EOT));
Let \[ f(x) = \ln (x^ {$n}) \]
$PAR
\( f'( x ) = \) \{ans_rule(40) \}
EOT

$ans = $funct1;
&ANS(function_cmp($ans));

TEXT(EV2(<<EOT));
$PAR
\( f'( e^{$x} ) = \) \{ans_rule(40) \}
EOT

$ans = $deriv1;
&ANS(std_num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
