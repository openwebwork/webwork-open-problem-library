##DESCRIPTION
##KEYWORDS('derivatives')
##  Find a derivative of a fraction of linear polynomials, evaluate it at a point
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,7,1);
$b = random(2,8,1);
$c = random(2,7,1);
$d = random(2,6,1);
if ($a*$d - $b*$c == 0) {$d = 7;} 
$x = random(1,5,1);

$deriv = ($a*$d - $c*$b)/($c*$x +$d)**2;
$funct = "($a*$d - $c*$b)/($c*x +$d)**2";

TEXT(EV2(<<EOT));
If 
\[ f(x) =  \frac { $a x +  $b } { $c x + $d }, \] 
find \( f'( $x ) \).
$BR $BR \{ans_rule(48) \}
$BR $BR

EOT

$ans = $deriv;
ANS(num_cmp($ans));

$num = $a*$d - $b*$c;
$denom = ($c*$x +$d)**2;

$ac = $a*$c;
$ad = $a*$d;
$bc = $b*$c;

SOLUTION(EV3(<<'EOF'));
$SOL $BR
Using the quotient rule, $BR $BR 
\(\displaystyle f'(x)= \frac{$a($c x+$d)-($a x+$b)$c}{($c x+$d)^2} = 
\frac{$ac x+$ad - $ac x - $bc}{($c x+$d)^2} = \frac{$num}{($c x+$d)^2}\) 
$BR $BR 
\(\displaystyle f'($x) = \frac{$num}{($c \cdot $x+$d)^2} = 
\frac{$num}{$denom} = $deriv\)

EOF

ENDDOCUMENT();        # This should be the last executable line in the problem.
