##DESCRIPTION
##  find the equation of the line given two points on the line
##ENDDESCRIPTION

##KEYWORDS('algebra', 'solve for variable' 'fraction')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$H = random(-10,10,1);
$K = random(-10,10,1);
$X = random(-10,10,1);
$Y = random(-10,10,1);

while ($X==$H) {$X = random(-10,10,1);}
while ($Y==$K) {$Y = random(-10,10,1);}

$quad = ($Y-$K)/($X-$H)**2;
$linear = -2*$quad*$H;
$const = $quad*$H**2+$K;

BEGIN_TEXT;
A quadratic function has its vertex at the point \( ($H,$K) \).  The function 
passes through the point \( ($X,$Y) \).  Find the quadratic and linear 
coefficients and the constant term of the function.
$BR
$BR
The quadratic coefficient is  \{ans_rule(10)\}. $BR$BR
The linear coefficient is \{ans_rule(10)\}. $BR$BR
The constant term is \{ans_rule(10)\}.
END_TEXT;

ANS(num_cmp($quad));
ANS(num_cmp($linear));
ANS(num_cmp($const));


ENDDOCUMENT();        # This should be the last executable line in the problem.

