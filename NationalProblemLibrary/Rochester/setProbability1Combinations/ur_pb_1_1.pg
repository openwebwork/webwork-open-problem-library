##KEYWORDS('probability','combinatorics','permutations')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$n = random(5,9,1);
$r = random(2,5,1);
$a = 1;

for ($i=2; $i<$n+1; $i+=1){
  $a = $a*$i;   
}

$b = 1;
for ($i=2; $i<$n-$r+1; $i+=1){
  $b = $b*$i;   
}

$ans = $a/$b; 

BEGIN_TEXT

Find the value of the permutation: $BR
\( P($n, $r) = \) \{ans_rule(10)\}

END_TEXT

ANS(num_cmp($ans));

ENDDOCUMENT();       # This should be the last executable line in the problem.
