##DESCRIPTION
##KEYWORDS('Standard Example')
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());


$a[0] = random(100,1000,1);
$a[1] = random(100,1000,1);

$number[0] = sprintf "%lb", $a[0];
$number[1] = sprintf "%lb", $a[1];

BEGIN_TEXT

Convert the following integers from binary notation to 
decimal notation: $BR
(a) \( $number[0] \) \{ ans_rule(30) \}
$PAR
(b) \( $number[1] \) \{ ans_rule(30) \}
END_TEXT

ANS(num_cmp( $a[0] ));
ANS(num_cmp( $a[1] ));


ENDDOCUMENT();        # This should be the last executable line in the problem.;
