#DESCRIPTION
##  Algebra problem: simplifying fraction
##ENDDESCRIPTION

##KEYWORDS('algebra', 'fraction')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);
TEXT(beginproblem());
$showCorrectPartialAnswers = 1;

$n1 = random(2,10,1);
$n2 = random(3,11,1);
$d1 = random(32,69,1);
$d2 = random(25,49,1);

BEGIN_TEXT
Add the fractions, and reduce your answer. 
             \[ \frac{$n1}{$d1}\div\frac{$n2}{$d2} \]
The reduced answer is \{ans_rule(5)\} / \{ans_rule(5)\}
END_TEXT
@factors = ();
@commonfactors = ();
$fac = $d1*$n2;
for($i=2; $i<=($d1*$n2)/2; $i++){
	if($fac % $i == 0){
		$fac =$fac/$i;
		push @factors,$i;
                $i = $i-1;
	};
};
$fac = $n1*$d2;
foreach $i (@factors){
	if($fac % $i == 0){
		$fac = $fac / $i;
		push @commonfactors,$i;
	};
};
$den = $d1*$n2;
$num = $n1*$d2;
foreach $i (@commonfactors){
	$num = $num / $i;
	$den = $den / $i;
};

ANS(num_cmp($num, mode=>"strict"));
ANS(num_cmp($den, mode=>"strict"));

ENDDOCUMENT();        # This should be the last executable line in the problem.
