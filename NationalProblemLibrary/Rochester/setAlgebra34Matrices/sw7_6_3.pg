#DESCRIPTION
##  Algebra problem:  Systems of equations and inequalities
##ENDDESCRIPTION

##KEYWORDS('algebra', 'determinant', 'matrix')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGmatrixmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a=random(-3,5,1);
$b=random(-3,5,1);
$c=random(-3,5,1);
$d=random(-3,5,1);

BEGIN_TEXT
Given the matrix
\{ mbox( display_matrix([[$a, $b], [$c, $d]]), "," ) \} 
$BR
(a) find its determinant;
$BR
Your answer is : \{ans_rule(25) \}
$BR
(b) does the matrix have an inverse?
$BR
Your answer is (input Yes or No) : \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = $a*$d-$b*$c;
if ($ans1 == 0){
$ans2 = "No";
}
else {
$ans2 = "Yes";
};

ANS(num_cmp($ans1));
ANS(str_cmp($ans2));

ENDDOCUMENT();        # This should be the last executable line in the problem.
