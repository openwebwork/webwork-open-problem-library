## DESCRIPTION
## Matrix Multiplication using 2x2 matrices
## Asks for product from both orders
##
## ENDDESCRIPTION

##KEYWORDS('algebra', 'matrix operation', 'matrix')
##Tagged by ynw2d

##DBsubject('Linear Algebra')
##DBchapter('Matrices')
##DBasection('Determinant of a Matrix')
##Institution('Rochester')

DOCUMENT() ;

loadMacros(
    "PG.pl",
    "PGbasicmacros.pl",
    "PGchoicemacros.pl",
    "PGanswermacros.pl",
    "PGauxiliaryFunctions.pl",
    "PGmatrixmacros.pl",
    "PGcomplexmacros.pl"

) ;
############
#TEXT($BEGIN_ONE_COLUMN,beginproblem()) ;
TEXT(beginproblem());
$A = new Matrix(2,2);
$B = new Matrix(2,2);
foreach my $i (1..2) {
    foreach my $j (1..2) {
        $A->assign($i,$j,cplx( random(-4,4,1), random(-4,4,1) ) );
        $B->assign($i,$j,cplx( random(-4,4,1), random(-4,4,1) ) );
    }
}

$showPartialCorrectAnswers = 1 ;

BEGIN_TEXT

If
\[ A = \{ display_matrix_mm($A)\} \]
find
\(|A|\) = \{ans_rule(10)\}.

END_TEXT

$a = element $A(1,1);
$b = element $A(1,2);
$c = element $A(2,1);
$d = element $A(2,2);

$ans = $a*$d - $b*$c;
ANS(cplx_cmp($ans));

#TEXT($END_ONE_COLUMN);
ENDDOCUMENT() ;

