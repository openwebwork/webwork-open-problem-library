#DESCRIPTION
#Sequences
#ENDDESCRIPTION

#KEYWORDS('Sequences')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$showHints = 1;

qa(~~@questions, ~~@answers,

"\(  \displaystyle \lbrace \frac{1}{3}, \frac{1}{9}, \frac{1}{27}, \frac{1}{81}, . . . \rbrace \)"     ,        "1/(3^n)",
"\(  \displaystyle \lbrace \frac{1}{3}, \frac{1}{6}, \frac{1}{9}, \frac{1}{12}, . . . \rbrace \)"      ,        "1/(3*n)",
"\(  \displaystyle \lbrace \frac{3}{4}, \frac{4}{9}, \frac{5}{16}, \frac{6}{25}, . . . \rbrace \)",    "(n+2)/((n+1)^2)",
"\(  \displaystyle \lbrace 0, \frac{1}{2}, \frac{2}{3}, \frac{3}{4} , . . . \rbrace \)"        ,        "(n-1)/n"        );

# Now randomize the questions:
@slice = &NchooseK(4,2);
@shuffle = &shuffle(scalar(@slice));
($ans1, $ans2) = @answers[@slice] ;


BEGIN_TEXT
For each sequence, find a formula for the general term, \( a_n \).
For example, answer \(n ^2 \) if given the sequence: $BR
\( \lbrace 1, 4, 9, 16, 25, 36, . . . \rbrace \)
$BR
\{ ans_rule(15) \}  $questions[$slice[0]]
$BR
\{ ans_rule(15)  \}  $questions[$slice[1]]  

END_TEXT

ANS(fun_cmp($ans1, vars=>"n"), fun_cmp($ans2, vars=>"n"));

ENDDOCUMENT();        # This should be the last executable line in the problem.


