##DESCRIPTION
##KEYWORDS('derivatives', 'chain rule')
##  Find a derivative of a polynomial; requires use of chain rule
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(2,5,1);
$b1 = random(2,5,1);
$c1 = random(2,8,1);
$x1 = random(1,5,1);
$deriv1 = (0.5*($a1*$x1*$x1+$b1*$x1+$c1)**(-0.5))*(2*$a1*$x1+$b1);
$funct1 = "(0.5*($a1*x*x+$b1*x+$c1)**(-0.5))*(2*$a1*x+$b1)";

TEXT(EV2(<<EOT));
Let \[ f(x) = \sqrt { $a1 x^2 + $b1 x + $c1 }\]
$PAR
\( f'( x ) = \) \{ans_rule(40) \}
$PAR
EOT

$ans = $funct1;
ANS(fun_cmp($ans));

TEXT(EV2(<<EOT));
\( f'( $x1 ) = \) \{ans_rule(40) \}
$BR
EOT

$ans = $deriv1;
ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.
