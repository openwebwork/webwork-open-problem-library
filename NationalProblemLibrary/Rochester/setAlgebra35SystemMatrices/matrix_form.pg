#DESCRIPTION
##  Algebra problem:  Algebra of Matrices
##  Matrix form for a system of linear equations
##
##ENDDESCRIPTION

##KEYWORDS('algebra', 'matrix operation', 'matrix')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"PGmatrixmacros.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a11=non_zero_random(-5,5,1);
$a12=non_zero_random(-5,5,1);
$a13=non_zero_random(-5,5,1);
$a21=non_zero_random(-5,5,1);
$a22=non_zero_random(-5,5,1);
$a23=non_zero_random(-5,5,1);
$a31=non_zero_random(-5,5,1);
$a32=non_zero_random(-5,5,1);
$a33=non_zero_random(-5,5,1);
$b1=random(-5,5,1);
$b2=random(-5,5,1);
$b3=random(-5,5,1);

BEGIN_TEXT
Write the system of equations
\[
\begin{array}{r}
        $a11 x ? {$a12} y ? {$a13} z = $b1\\\\
        $a21 x ? {$a22} y ? {$a23} z = $b2\\\\
        $a31 x ? {$a32} y ? {$a33} z = $b3\\\\
\end{array}
\]
as a matrix equation, that is, rewrite it in the form
$BR 
\{ mbox( answer_matrix(3,3,5), display_matrix([["\(x\)"], ["\(y\)"], ["\(z\)"]]), "\(=\)", answer_matrix(3,1,5), "." ) \} 
END_TEXT

$ans1 = $a11;
$ans2 = $a12;
$ans3 = $a13;
$ans4 = $a21;
$ans5 = $a22;
$ans6 = $a23;
$ans7 = $a31;
$ans8 = $a32;
$ans9 = $a33;
$ans10 = $b1;
$ans11 = $b2;
$ans12 = $b3;
ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));
ANS(num_cmp($ans5));
ANS(num_cmp($ans6));
ANS(num_cmp($ans7));
ANS(num_cmp($ans8));
ANS(num_cmp($ans9));
ANS(num_cmp($ans10));
ANS(num_cmp($ans11));
ANS(num_cmp($ans12));

ENDDOCUMENT();        # This should be the last executable line in the problem.

