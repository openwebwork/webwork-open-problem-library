TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

@header=("\( A \)","\( B \)",
"\( \overline{B} \)",
"\( A \cap B \)",
"\( A \cap \overline{B} \)",
"\( (A \cap B) \cup (A \cap \overline{B}) \)");
@Aa=qw(0 1 0 1);
@Ab=qw(1 0 1 1);
@Ac=qw(0 0 0 0);
