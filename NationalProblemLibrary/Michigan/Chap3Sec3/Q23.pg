DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");
Context()->variables->add( z=>'Real' );
Context()->flags->set( limits=>[0.1,3]);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,15,1);
$r = random(2,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( f(z) \), below.  It may be to your
advantage to simplify  first.
$BR
\(\displaystyle f(z) = \frac{z^$r + $a}{\sqrt{z}} \)

$PAR
\( f'(z) = \) \{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;


ANS( Compute( "($r-1/2)*z^($r-3/2) - $a/(2*z^(3/2))" )->cmp() );

$r1 = (2*$r - 1) . '/2';
$r1d = "\frac{" . (2*$r - 1) . "}{2}";
$r2 = (2*$r - 3) . '/2';
$f2 = ( $a/2 == int($a/2) ) ? ($a/2) . " z^{-3/2}" : "\frac{$a}{2} z^{-3/2}";

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that 
\( f(z) = \frac{z^$r + $a}{\sqrt{z}} = z^{$r1} + $a z^{-1/2}. \)
Thus

\[ f'(z) = $r1d z^{$r2} - $f2. \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
