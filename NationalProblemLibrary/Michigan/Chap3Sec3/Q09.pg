DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");
Context()->variables->add( y=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,15,1);
$r = random(2,9,1);
$b = random(1,9,1);
$b = "e" if ( $b == 1 );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( f(y) \), below.  It may be to your
advantage to simplify  first.
$BR
\( f(y) = $b^y ($a - y^$r) \)

$PAR
\( f'(y) = \) \{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "ln($b)*($b^y)*($a - y^$r) - ($b^y)*$r*y^($r-1)" )->cmp() );

$lb = ( $b eq 'e' ) ? '' : "\ln($b)";
$yr = ( $r == 2 ) ? 'y' : 'y^{' . ($r-1) . '}';

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ f'(y) = $lb ($b^y) ($a - y^$r) - $r ($b^y) $yr \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
