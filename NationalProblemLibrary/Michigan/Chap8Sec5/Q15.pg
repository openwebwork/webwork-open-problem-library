TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$dep = random(8,16,2);
$rad = random(3,8,1);
$hei = 3*$rad;
$fil = random(2*$rad, $hei-1, 1);

# include javascript for pop-up explaining units
