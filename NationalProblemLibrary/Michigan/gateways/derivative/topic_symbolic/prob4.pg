DOCUMENT();
loadMacros(
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
           "PGchoicemacros.pl",
           "PGauxiliaryFunctions.pl",
	   "MathObjects.pl",
           );

TEXT();
$showPartialCorrectAnswers = 1;

Context('Numeric');
Context()->variables->are( Q=>'Real',  k=>'Real',  t=>'Real');
Context()->variables->set( Q=>{limits=>[-5,5]}, k=>{limits=>[1,3]}, t=>{limits=>[-1,1]} );

# Context()->flags->set( limits=>[[-5,5], [1,3], [-1,1]] );

$ans = "Q*k*e^(k*t)";

$tut = htmlLink("http://instruct.math.lsa.umich.edu/cgi-bin/tutorial/" .
		"gwderivtut?pnum=710","rule for constant multiples","");

Context()->texStrings;
BEGIN_TEXT
Differentiate \(P(t)=Q e^{(kt)}\), where \(Q,k\) are constants
$BR
Answer: \( P'(t) = \) \{ans_rule(55)\}
END_TEXT
Context()->normalStrings;

# ANS(fun_cmp($ans, 'var'=>['Q', 'k', 't']));
ANS( Compute("$ans")->cmp() );

$bsbox = MODES('TeX' => '\par{\bf Solution outline:} ',
	       'Latex2HTML' => '\par{\bf Solution outline:} ',
	       'HTML' => '<div class="gwSoln"><b>Solution outline:</b>');
$esbox = MODES('TeX' => '\par',
	       'Latex2HTML' => '\par',
	       'HTML' => '</div>');
SOLUTION($bsbox,"The solution to this problem is obtained with the ", $tut,
	 ".", $esbox);

ENDDOCUMENT();
