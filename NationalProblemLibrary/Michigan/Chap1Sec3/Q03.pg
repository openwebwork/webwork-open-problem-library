DOCUMENT();
loadMacros(
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"MathObjects.pl",
);

Context("Numeric");
Context()->variables->add(t=>'Real');

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2, 5, 1);
$b=random(2,10,1);

Context()->texStrings;
BEGIN_TEXT
For the function \(f(x)=$a e^{x}\) and \(g(x)=x^{$b}\), find the following: 

$BR
${BBOLD}(a)$EBOLD 
\(f(g(1))\)= \{ans_rule(35)\}
$BR
${BBOLD}(b)$EBOLD 
\(g(f(1))\)= \{ans_rule(35)\}
$BR
${BBOLD}(c)$EBOLD 
\(f(g(x))\)= \{ans_rule(35)\}
$BR
${BBOLD}(d)$EBOLD 
\(g(f(x))\)= \{ans_rule(35)\}
$BR
${BBOLD}(e)$EBOLD 
\(f(t)g(t)\)= \{ans_rule(35)\}

END_TEXT
Context()->normalStrings;

## try to avoid getting any values that are too large when we're
##    doing the answer evaluation
$fofg = Compute("$a*e^(x^($b))");
$fofg->{limits} = [-1.2,1.2];

$goff = Compute("($a*e^x)^($b)");
$goff->{limits} = [-1.2,1.2];

ANS(Compute("$a*e")->cmp() );
ANS(Compute("($a*e)^($b)")->cmp() );
ANS($fofg->cmp() );
ANS($goff->cmp() );
ANS(Compute("$a*e^(t)*t^($b)")->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR
${BBOLD}(a)$EBOLD
\(f(g(1))=f(1^{$b})=$a e^{(1^{$b})}\)
$BR
${BBOLD}(b)$EBOLD
\(g(f(1))=g($a e^{1})=($a e^{1})^{$b}\)
$BR
${BBOLD}(c)$EBOLD
\(f(g(x))=f(x^{$b})=$a e^{(x^{$b})}\)
$BR
${BBOLD}(d)$EBOLD
\(g(f(x))=g($a e^{x})=($a e^{x})^{$b}\)
$BR
${BBOLD}(e)$EBOLD
\(f(t)g(t)=$a e^{t} t^{$b}\)

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
