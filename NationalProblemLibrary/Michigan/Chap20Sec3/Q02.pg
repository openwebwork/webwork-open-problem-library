DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"MathObjects.pl",
# "parserNumberWithUnits.pl",
# "parserFormulaWithUnits.pl", 
# "parserFormulaUpToConstant.pl",
# "PGcourse.pl",
);

Context("Vector");
Context()->flags->set( ijk=>1 );
Context()->constants->set(
  i => {TeX => "\,\mathit{\vec i}"},
  j => {TeX => "\,\mathit{\vec j}"},
  k => {TeX => "\,\mathit{\vec k}"},
);
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-8,8,1);
$b = non_zero_random(-8,8,1);
$c = non_zero_random(-8,8,1);
$w = list_random(1,2,3);
$w = 3;
if ( $w == 1 ) {
    $fvec = Vector( Compute("$a*x")->reduce(), Compute("$b*z")->reduce(),
		    Compute("$c*y")->reduce() );
    $curl = Vector( Compute("-$b + $c"), Compute(0), Compute(0) );
} elsif ( $w == 2 ) {
    $fvec = Vector( Compute("$a*y")->reduce(), Compute("$b*x")->reduce(),
		    Compute("$c*z")->reduce() );
    $curl = Vector( Compute(0), Compute(0), Compute("-$a + $b") );
} else {
    $fvec = Vector( Compute("$a*z")->reduce(), Compute("$b*y")->reduce(),
		    Compute("$c*x")->reduce() );
    $curl = Vector( Compute(0), Compute("$a - $c"), Compute(0) );
}

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

Compute the curl of the vector field
\( \vec F = $fvec \).

$PAR
curl = \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS( $curl->cmp() );

@f = $fvec->value();

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We have
\[
\mbox{curl}($fvec) = \left|
\begin{array}{ccc}
 \quad\vec i\quad &\quad  \vec j\quad &\quad \vec k\quad \\
\frac{\partial}{\partial x} & \frac{\partial}{\partial y} & 
\frac{\partial}{\partial z}\\
$f[0] & $f[1] & $f[2]
\end{array}
\right| = $curl.
\]

END_SOLUTION
Context()->normalStrings;

COMMENT('Uses MathObjects');

ENDDOCUMENT();
