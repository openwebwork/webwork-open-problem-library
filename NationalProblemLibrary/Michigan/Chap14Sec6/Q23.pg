DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"MathObjects.pl",
# "parserNumberWithUnits.pl",
# "parserFormulaWithUnits.pl", 
# "parserFormulaUpToConstant.pl",
# "PGcourse.pl",
);

Context("Numeric");
$showPartialCorrectAnswers = 1;

@zvar = ( "u", "v", "w", "x", "y" );
$num_zvar = random(2,5,1);
$zarg = join( ",", @zvar[0..($num_zvar-1)] );

@tvar = ( "r", "s", "t" );
$num_tvar = random(2,3,1);

$targ = join( ",", @tvar[0..($num_tvar-1)] );
@uvars = ();
for ( my $i=0; $i<$num_zvar; $i++ ) {
    push( @uvars, "$zvar[$i]($targ)" );
}
$uvar = join( ",", @uvars );

$num_terms = Compute( "$num_zvar" );

Context()->texStrings;
TEXT(beginproblem());
BEGIN_TEXT

Let \( z=g($zarg) \) and
\( $uvar \).
How many terms are there in the expression for \( \partial z/\partial r \)?

$PAR
\{ ans_rule(35) \} terms

END_TEXT
Context()->normalStrings;

ANS($num_terms->cmp() );

$derivString = "";
@derivs = ();
for( my $i=0; $i<$num_zvar; $i++ ) {
    push( @derivs, "g_{$zvar[$i]}\cdot $zvar[$i]_{r}" )
}
$derivString = join("+", @derivs);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

By the chain rule,
\[
\frac{\partial z}{\partial t} =
    $derivString.
\]
Thus, there are $num_terms terms.


END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
