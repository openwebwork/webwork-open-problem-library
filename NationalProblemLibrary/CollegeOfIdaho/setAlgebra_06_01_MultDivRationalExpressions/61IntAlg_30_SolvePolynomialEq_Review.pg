DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextInequalitiesAllowStrings.pl"
);

TEXT(beginproblem());

######################################
#  Setup
#  Form: (x-a)(x+b)=0 => (x+e)^2-c(x+d)=nx+m

$a = random(1,4,1);
$b = random(1,7,1);
$c = random(2,5,1);
$e = random(2,4,1);
if (2*$e+$a==$b+$c) {$e = $e + random(-1,1,2);}
$d = random(3,5,1);
if ($a*$b+$e*$e==$c*$d) {$d = $d + random(-1,1,2);}

$polynomial = Formula("(2*$e+$a-$b-$c)x + ($a*$b-$c*$d+$e*$e)")->reduce->TeX;

######################################
#  Main text

BEGIN_TEXT
REVIEW: Use factoring to solve the polynomial equation:
 \[  (x+$e)^2-$c(x+$d) = $polynomial \]
$BR
Note: You may enter your answer as "x = a or x = b" or "{a,b}". Contrary to what was suggested in class, WeBWorK $BBOLD will $EBOLD accept either form. 
$BR
Answer:  \{ ans_rule(30) \} 
END_TEXT

######################################
#  Answer

Context("Inequalities-AllowStrings");

$ans = Compute("x = $a or x=-$b");
ANS($ans->cmp); 

$showPartialCorrectAnswers = 1;

######################################


COMMENT('MathObject version');
ENDDOCUMENT();
