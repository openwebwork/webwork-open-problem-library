DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "contextPiecewiseFunction.pl"
);

TEXT(beginproblem());

######################################
#  Setup


Context("PiecewiseFunction");


$m1 = random(2,5,1);

$b1 = non_zero_random(-6,6,1);

$m2 = random(-5,-1,1);

$b2 = random(1,6,1);

$x = random(-2,2,1);


$f = Formula("$m1 x + $b1 if x <= $x else $m2 x - $b2 if x > $x");
$f = $f->reduce('(-x)-y'=>0,'(-x)*y'=>0);  #Makes f look nicer--negative signs

@xnum = (random($x-3,$x-1,1),random($x+1,$x+3,1),$x);
@slice = NchooseK(3,3);
@input = @xnum[@slice];

 
######################################
#  Main text


BEGIN_TEXT

REVIEW: Find the given values for the following function:  



 \[ f(x) = \{$f->TeX\} \]



Find the indicated values:

$PAR

a) \( f($input[0]) \) = \{ans_rule(15)\}

$PAR

b) \( f($input[1]) \) = \{ans_rule(15)\}

END_TEXT


######################################
#  Answer

Context("LimitedNumeric");
Context()->strings->add("No solution"=>{},
                        "Not defined"=>{},
                        "Does not exist"=> {},
                        "All real numbers"=>{});

$ans_a = $f->eval(x=>$input[0])->inContext(Context());
ANS($ans_a->cmp);

$ans_b = $f->eval(x=>$input[1])->inContext(Context());
ANS($ans_b->cmp);

$showPartialCorrectAnswers = 1;

######################################



COMMENT('MathObject version');
ENDDOCUMENT();
