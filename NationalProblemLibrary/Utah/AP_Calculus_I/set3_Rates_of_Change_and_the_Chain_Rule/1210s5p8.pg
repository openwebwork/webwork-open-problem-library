##DESCRIPTION
# Find the slope of the tangent line -- using differentiation formulae
##ENDDESCRIPTION

## Author('Utah ww group')
## Institution('Univeristy of Utah')
## DBsubject('Calculus')
## DBchapter('Differentiation')
## DBsection('Implicit Differentiation')
## AuthorText1('Jerrold Marsden and Alan Weinstein')
## TitleText1('Calculus I')
## EditionText1('2')
## Section1('Rates of Change and the Chain Rule')
## Problem1('')
## KEYWORDS('calculus')


DOCUMENT();        # This should be the first executable line in the problem.

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
"PGauxiliaryFunctions.pl");

TEXT(&beginproblem);
$showPartialCorrectAnswers = 0;

$denom=0;
while ($denom == 0 || abs($a) < 2 || abs($b) < 2 || abs($c) < 2 ) {
$x1 = random(-8,8,1);
$y1 = random(-8,8,1);
$a=   random(-6,6,1);
$b=   random(-6,6,1);
$c=   random(-6,6,1);
$d = $a*$x1**2 + $b*$x1*$y1 + $c*$y1**3;
$num = 2*$a*$x1 + $b*$y1;
$denom = $b*$x1 + 3*$c*$y1**2;
}
$yp = - $num/$denom;

# Present the text.
TEXT(EV2(<<EOT));
Find the slope of the tangent line to the curve

\[ $a x^2 + $b xy + $c y^3 = $d   \]

at the point \( ( $x1,$y1 ) \). $BR
Your answer: 
\{ &ans_rule(30) \}
$PAR
EOT

&ANS(std_num_cmp($yp) );

TEXT(EV3(<<'EOT'));
$BR $BBOLD Hint:$EBOLD Differentiate implicitly.
EOT





ENDDOCUMENT();        # This should be the last executable line in the problem.

