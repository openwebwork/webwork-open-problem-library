DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl"
);

install_problem_grader(~~&std_problem_grader);
TEXT(&beginproblem);

$showPartialCorrectAnswers = 0;
$showPartialCredit = 0;
$b = random(4,10,2);
$c = random(12,20,2);

$det = non_zero_random(-8,8,2);
$d = (-$det+$c*$b)/2;

$ans1 = (13*$b - 2*$d)/$det;
$ans2 = (-26 + 2*$c)/$det; 

$NO_SPACE = '@{}';

BEGIN_TEXT

Solve the system.

\[ \left\{"\{"\}
\begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
 2 x & + $b y & = & 2 \cr
$c x & +$d y & = & 13
\end{array} \right. \]

\( x= \) \{ans_rule(10) \}$BR

\( y= \) \{ans_rule(10) \}

END_TEXT

&ANS(arith_num_cmp($ans1));
&ANS(arith_num_cmp($ans2));

ENDDOCUMENT();       # This should be the last executable line in the probl


