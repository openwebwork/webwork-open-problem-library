# output the text of the problem

$a = random(2,10,1);
$b = random(2,10,1);
$c = random(2,10,1);
$d = random(2,5,1);
$co1 = $d-5;
$co2 = $d+1;
$co3 = $d*2;
$co4 = $co3+3;
$lcb ="\{";

BEGIN_TEXT

Let  \( f(x)=\left$lcb\begin{array}{ll} 
                    $a x^2 + $b & x <$d \cr
		    $a & $d \le x \le $co3 \cr
		    $c - x &  x > $co3
		    \end{array}\right.\)

$BR

\(f($co1)=\) \{ans_rule(20)\}

$PAR

\(f($d)=\) \{ans_rule(20)\} 

$PAR

\(f($co2)=\) \{ans_rule(20)\}
    
$PAR

\(f($co3)=\) \{ans_rule(20)\}

$PAR

\(f($co4)=\) \{ans_rule(20)\}

END_TEXT

$ans1 = $a*$co1**2+$b; 
$ans2 = $a; 
$ans3 = $a;
$ans4 = $a;
$ans5 = $c-$co4;

&ANS(std_num_cmp($ans1));
&ANS(std_num_cmp($ans2));
&ANS(std_num_cmp($ans3));
&ANS(std_num_cmp($ans4));
&ANS(std_num_cmp($ans5));


