loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(&beginproblem);


$a11=random(-9,9,1); 
$a12=random(-6,6,1);
$a21=random(-9,9,1);
$a22=random(-9,9,1);

$b11=random(-9,9,1);
$b12=random(-6,6,1);
$b21=random(-9,9,1);
$b22=random(-9,9,1);


TEXT(EV2(<<EOT)); 

Let 
\[A = 
\left[\begin{array}{rr}
$a11 & $a12 \\
$a21 & $a22 \\
\end{array}\right]
\quad\hbox{and}\quad
B = 
\left[\begin{array}{rr}
$b11 & $b12 \\
$b21 & $b22 \\
\end{array}\right].
\]

Then 
\[AB = \left[
\begin{array}{rr}
c_{11} & c_{12} \\
c_{21} & c_{22} \\
\end{array}\right] \]

where
$BR
\(c_{11} \) =  \{ ans_rule(10) \},

EOT
&ANS( num_cmp($a11*$b11+$a12*$b21));

TEXT(EV2(<<EOT)); 
$BR
\(c_{12} \) =  \{ ans_rule(10) \},

EOT
&ANS( num_cmp($a11*$b12+$a12*$b22));

TEXT(EV2(<<EOT)); 
$BR
\(c_{21} \) =  \{ ans_rule(10) \},

EOT
&ANS( num_cmp($a21*$b11+$a22*$b21));

TEXT(EV2(<<EOT)); 
$BR
\(c_{22} \) =  \{ ans_rule(10) \},

EOT
&ANS( num_cmp($a21*$b12+$a22*$b22));






