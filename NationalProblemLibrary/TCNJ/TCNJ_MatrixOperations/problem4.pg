##DESCRIPTION
##KEYWORDS('matrix', 'product')
##
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$A = new Matrix(2,2);
$B = new Matrix(2,2);
$C = new Matrix(2,2);

foreach my $i (1..2) {
   foreach my $j (1..2) {
      $A->assign($i,$j, random(-9,9,1));
   }
}

foreach my $i (1..2) {
   foreach my $j (1..2) {
      $B->assign($i,$j, non_zero_random(-9,9,1));
    }
}

$m = random(2,5,1)*random(-1,1,2);
$C = ($B-$A)*(1/$m);

BEGIN_TEXT

Solve for \(X\). 
$BR
$BR
\{ mbox( display_matrix($A), '\(+ $m X=\)', display_matrix($B) ) \}
$BR
\{ mbox( '\(X=\)', answer_matrix(2,2,10) ) \}

END_TEXT

ANS num_cmp(ra_flatten_matrix($C));

ENDDOCUMENT();       # This should be the last executable line in the problem.