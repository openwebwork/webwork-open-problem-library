##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"unionTables.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric")->variables->are(a=>"Real");

$b = random(3,7,1);
$c = random(1,2,1);

$fraction = "$b^{a-$c}";

$num = Formula("$b^a")->reduce;
$den = Formula("$b^$c")->reduce;

# 
#  Display the fraction and answer blanks nicely
#
Context()->texStrings;
if ($displayMode eq 'TeX') {
  $showfraction =
  "\[ $fraction = ".ans_rule(10).ans_rule(10)." \]";
} else {
  $showfraction =
  ColumnTable(
  "\( \displaystyle $fraction = \)",
  ans_rule(10).$BR.$HR.ans_rule(10),
  indent => 0, separation => 10, valign => "MIDDLE"
  );
}
Context()->normalStrings;



##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Using laws of exponents, rewrite the following
expression as a quotient.
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
$showfraction
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

install_problem_grader(~~&std_problem_grader);

ANS($num->cmp);
ANS($den->cmp);


COMMENT('MathObject version');
ENDDOCUMENT();
