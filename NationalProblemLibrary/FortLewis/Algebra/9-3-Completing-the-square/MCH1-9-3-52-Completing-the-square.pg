####################################
#  Initialization

DOCUMENT();  

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"parserPopUp.pl",
);

TEXT(beginproblem());


####################################
#  Setup

Context("Numeric");

SRAND($psvn);

$type = (random(0,2,1)+2) % 3;
# $type mod 3 = number of solutions

if ($type == 0) {

#  a x^2 + b x + c = 0
$a = random(2,5,1);
$b = random(2,5,1);
$c = random(4,9,1);

$expr = Formula("$a x^2 + $b x + $c")->reduce;
$disc = Real("($b)^2 - 4 * $a * $c");
$popup = PopUp(["?","Two solutions","One solution","Zero solutions"],"Zero solutions");

} elsif ($type == 1) {

#  a x^2 + b x + c = 0
$b = random(2,8,2);
$s = random(-1,1,2);
$i = random(0,1);

if ($b == 2) {
  $a = random(-1,1,2);
  $c = $a;
} elsif ($b == 4) {
  $a = $s * (1,2)[$i];
  $c = $s * (4,2)[$i];
} elsif ($b == 6) {
  $a = $s * (1,3)[$i];
  $c = $s * (9,3)[$i];
} else {
  $a = $s * (2,4)[$i];
  $c = $s * (8,4)[$i];  
}

$expr = Formula("$a x^2 + $b x + $c")->reduce;
$disc = Real("($b)^2 - 4 * $a * $c");
$popup = PopUp(["?","Two solutions","One solution","Zero solutions"],"One solution");

} else {

#  a x^2 + b x + c = 0
$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);
$s = random(-1,1,2);

if ($s==1) { $a = -($a); } else { $c = -($c); }

$expr = Formula("$a x^2 + $b x + $c")->reduce;
$disc = Real("($b)^2 - 4 * $a * $c");
$popup = PopUp(["?","Two solutions","One solution","Zero solutions"],"Two solutions");

}


####################################
#  Main Text

Context()->texStrings;
BEGIN_TEXT
(a) Find the discriminant of the equation \( $expr = 0 \).
$BR
Discriminant = \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
(b) Use the discriminant to say whether the equation has
two (distinct) solutions, one solution, or no 
solutions.
$BR
The equation has \{ $popup->menu() \}.
END_TEXT
Context()->normalStrings;

###################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $disc->cmp() );
ANS( $popup->cmp() );

COMMENT("Problems 48, 50, and 52 should be used together as a group to cover all three cases in random order.");

ENDDOCUMENT();
