####################################
#  Initialization

DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
"contextLimitedPolynomial.pl",
"contextPolynomialFactors.pl",
"contextLimitedPowers.pl",
);

TEXT(beginproblem()); 


####################################
#  Setup

Context("LimitedPolynomial-Strict");

$n = list_random(4,6);
$a = random(2,4,1);

$b = ($a+$n);
$h = ($b-$a)/2;
$k = $h**2+$a*$b;

$vertexform = "(x-$h)^2-$k";

#
#  Standard form
#
$p[0] = $h**2 - $k;
$p[1] = 2*$h;

$standardform = Formula("x^2 - $p[1] x + $p[0]")->reduce;


#
#  Factored form
#
Context("PolynomialFactors-Strict");

LimitedPowers::OnlyIntegers(
minPower => 0, maxPower => 1,
message => "either 0 or 1",
);

$fac1 = Compute("(x+$a)");
$fac2 = Compute("(x-$b)");

$r = non_zero_random(-$a+1,$b-1,1);

$fr = $standardform->eval(x=>$r);

######################################
#  Main text

BEGIN_TEXT
The quadratic expression \( $vertexform \)
is written in vertex form.
$BR
$BR
(a) Write the expression in standard form 
\( ax^2 + bx + c \).
$BR
\{ ans_rule(30) \}
\{ AnswerFormatHelp("formulas") \}
$BR
$BR
(b) Write the expression in factored form
\( k(ax+b)(cx+d) \).
$BR
\{ ans_rule(20)\}
\{ AnswerFormatHelp("formulas") \}
$BR
$BR
(c) Evaluate the expression at \( x = 0 \) 
using each of the three forms, compare 
the results, and enter your answer below.
$BR
\{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
$BR
$BR
(d) Evaluate the expression at \( x = $r \) 
using each of the three forms, compare 
the results, and enter your answer below.
$BR
\{ ans_rule(10) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT


######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($standardform->cmp() );
ANS(Compute("$fac1 $fac2")->cmp() );
ANS(Real($p[0])->cmp() );
ANS($fr->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();