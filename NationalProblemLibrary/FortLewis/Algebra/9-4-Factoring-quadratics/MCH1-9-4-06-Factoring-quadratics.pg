##############################################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
"AnswerFormatHelp.pl",
"contextPolynomialFactors.pl",
"contextLimitedPowers.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("PolynomialFactors-Strict");

$a = random(2,6,1);
$b = random(2,6,1);
while ($a == $b || $a == $b/$a) { $b = random(2,6,1); }
$n = random(2,4,1);

$factored = Compute("($a x - $b)(x - $a)^{$n}");
$roots = List(Compute("$a"),Compute("$b/$a"));


##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Solve the equation \( $factored = 0 \).
If there is more than one correct answer, enter your answers
as a comma separated list.  If there are no solutions, enter
${BITALIC}NONE.${EITALIC}
$BR
$BR
\( x \) = \{ ans_rule(20) \}
\{ AnswerFormatHelp("numbers") \}
END_TEXT
Context()->normalStrings;


#############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($roots->cmp() );


COMMENT('MathObject version');
ENDDOCUMENT();
