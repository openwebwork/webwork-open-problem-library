DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

#######################################
#  Set-up

$tf = new_select_list();

$tf->rf_print_q(~~&pop_up_list_print_q);
$tf->ra_pop_up_list( [ No_answer=>"?", 
"Identity"=>"Identity", "Not an Identity"=>"Not an Identity"] );

$tf -> qa ( 
"\( 2x^2 + 3x^3 = 5x^5 \) $BR",
"Not an Identity",
"\( 2 A B^2 + 3 A^2 B = 5 A^2 B^2 \) $BR",
"Not an Identity",
"\( 4h^2 + 3h^2 = 7h^2 \) $BR",
"Identity",
"\( 3b + 2b^2 = 5b^3 \) $BR",
"Not an Identity",
);

$tf->choose(4);


################################################
#  Main text

BEGIN_TEXT

Determine whether the equations are identities.
$BR
\{ $tf-> print_q \}

END_TEXT


################################################
#  Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS(str_cmp($tf->ra_correct_ans));

