###########################
#  Initialization

DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"AnswerFormatHelp.pl",
"contextLimitedPoint.pl",
);

TEXT(beginproblem());


###########################
#  Setup

Context("LimitedPoint");

$f = Compute("x^2-1");

$xint = List( Point("(1,0)"), Point("(-1,0)") );

$yint = List( Point("(0,-1)") );


###########################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Enter the x-intercept(s) and y-intercept(s)
of \( y = $f \).  Enter a point as \( (a,b) \),
including the parentheses.  If there is more 
than one correct answer, enter a comma 
separated list of points.
$BR
$BR
x-intercept(s): \{ ans_rule(20) \}
\{ AnswerFormatHelp("points") \}
$BR
y-intercept(s): \{ ans_rule(20) \}
\{ AnswerFormatHelp("points") \}
END_TEXT
Context()->normalStrings;


############################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $xint->cmp() );

ANS( $yint->cmp() );


############################
#  Solution

Context()->texStrings;
BEGIN_SOLUTION
${PAR}SOLUTION:${PAR}
Solution explanation goes here.
END_SOLUTION
Context()->normalStrings;

COMMENT('MathObject version.');

ENDDOCUMENT();
