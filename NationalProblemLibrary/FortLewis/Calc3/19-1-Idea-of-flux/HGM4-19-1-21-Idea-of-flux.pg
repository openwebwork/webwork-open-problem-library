DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGcourse.pl",
"MathObjects.pl",
);

TEXT(beginproblem());

#####################################
#  Setup

Context("Numeric");

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);

$d = random(2,4,1);
$e = random(2,4,1);
$f = random(2,4,1);

while ($a*$d-$b*$e+$c*$f==0) {

$a = random(2,9,1);
$b = random(2,9,1);
$c = random(2,9,1);

}

$r = random(3,7,1);

$answer = Real("(($a*$d - $b*$e + $c*$f) / sqrt($d^2+$e^2+$f^2)) * $r^2");


########################################
#  Main text

BEGIN_TEXT
Calculate the flux of the vector field
\( \vec{F}(x,y,z) = $a \vec{i} - $b \vec{j} + $c \vec{k} \) 
through a square of side length \( $r \)
lying in the plane \( $d x + $e y + $f z = 1 \), 
oriented away from the origin.
$BR
$BR
Flux = \{ ans_rule(20) \}
END_TEXT


###############################################
#  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS($answer->cmp() );


COMMENT('MathObject version');
