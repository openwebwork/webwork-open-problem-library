## DESCRIPTION
##   Convert Degrees to Radians
## ENDDESCRIPTION

## KEYWORDS('Trig', 'Degree', 'Radian')
## Tagged by nhamblet

## DBsubject('Trigonometry')
## DBchapter('Trigonometric Functions of Angles')
## DBsection('Angle Measure')
## Date('8/23/07')
## Author('K. Lesh')
## Institution('Union')
## TitleText1('')
## EditionText1('')
## AuthorText1('')
## Section1('')
## Problem1('')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",        # the new parser
  "alignedChoice.pl",      # for aligned answer blanks
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

$a1 = random(-400,400,20);
$b1 = random(-400,400,15);
$c1 = random(-400,400,10);
$d1 = random(-400,400,5);
$e1 = random(-400,400,10);

###########################################
#
# Compute the answers

$ans1 = $a1*pi/180;
$ans2 = $b1*pi/180;
$ans3 = $c1*pi/180;
$ans4 = $d1*pi/180;
$ans5 = $e1*pi/180;

###########################################
#
#  Make the alignment
#

Context()->texStrings;
$al = new_aligned_list(ans_rule_len=>10, numbered=>1, tex_spacing=>"3pt");
$al->qa(
  ["\($a1^{\circ}\)"," radians"], Real($ans1)->cmp,
  ["\($b1^{\circ}\)"," radians"], Real($ans2)->cmp,
  ["\($c1^{\circ}\)"," radians"], Real($ans3)->cmp,
  ["\($d1^{\circ}\)"," radians"], Real($ans4)->cmp,
  ["\($e1^{\circ}\)"," radians"], Real($ans5)->cmp,
);

Context()->normalStrings;

###################################
# Main text

BEGIN_TEXT
Convert the following degree measures to  radian measures:
$PAR
\{$al->print_q\}
END_TEXT

###################################
# Answer checking

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################

COMMENT('MathObject version');
ENDDOCUMENT();
