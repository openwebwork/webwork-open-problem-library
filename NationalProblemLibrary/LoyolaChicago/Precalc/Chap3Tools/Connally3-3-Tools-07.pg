DOCUMENT(); 

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

##############################################
#  Setup

Context("Numeric");

#
# b^a / b^c
#

$b1 = random(5,15,1);
$a1 = random(3,7,1);
$c1 = $a1 - 1;
$answera = Real("$b1");

$b2 = random(4,9,1);
$a2 = 3;
$c2 = 1;
$answerb = Real("$b2**2");

$b3 = 10;
$a3 = random(7,9,1);
$c3 = random(2,5,1);
$answerc = Real("$b3**($a3 - $c3)");

$b4 = random(4,9,1);
$a4 = random(3,9,1);
$answerd = Real("1");

Context()->operators->undefine("+","-","*","/","**","^");
Context()->functions->disable("All");

##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT

Evaluate the following without a calculator.  
Simplify your answers as much as possible.
$BR
$BR
(a) \( \displaystyle \frac{ $b1^{$a1} }{ $b1^{$c1} } = \)
\{ans_rule(10)\}
$BR
$BR
(b) \( \displaystyle \frac{ $b2^{$a2} }{ $b2 } = \)
\{ans_rule(10)\}
$BR
$BR
(c) \( \displaystyle \frac{ $b3^{$a3} }{ $b3^{$c3} } = \)
\{ans_rule(10)\}
$BR
$BR
(d) \( \displaystyle \frac{ $b4^{$a4} }{ $b4^{$a4} } = \)
\{ans_rule(10)\}

END_TEXT
Context()->normalStrings;

##################################################
#  Answer evaluation

#install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 1;

ANS($answera->cmp());
ANS($answerb->cmp());
ANS($answerc->cmp());
ANS($answerd->cmp());


COMMENT('MathObject version');
ENDDOCUMENT();