@perm = shuffle(5);
@letter = ("A","B","C","D","E");

@fig = @fig[@perm];
@inv = invert(@perm);

if ($h < 0) { $ans2 = "left" } else {$ans2 = "right"};
$hor_shift = $h_abs;
if ($a > 0) { $ans3 = "has NOT"; $updown = "upward";
              if ($k == 0) {
                             $ans1 = $letter[$inv[1]];
                             $ans5 = "no shift"}
                      else {
                             $ans1 = $letter[$inv[3]];
                             $ans5 = "up"}
}
       else { $ans3 = "has"; $updown = "downward";
