$showPartialCorrectAnswers = 1;

$a_abs = random(2,4,1);
$n = random(0,1,1);
$a = (-1)**$n * $a_abs;
$h = random(-4,-1,1);
$h_abs = -$h;
$k = random(0,4,1);
$b = -2*$h;
$c = $h**2;
$const = $a*$c+$k;
$b_final = $a*$b;
$eqn = "$a x^2 + $b_final x + $const";


################  Down with vertex at (-2,0) ##########################
