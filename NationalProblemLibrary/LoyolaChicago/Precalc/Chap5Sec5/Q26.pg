                             $ans1 = $letter[$inv[0]];
                             $ans5 = "no shift"}
                      else {
                             $ans1 = $letter[$inv[2]];
                             $ans5 = "up"}
};
$ans4 = "stretched";
$vert_fact = $a_abs;
if ($k == 0) { $ans5 = "no vertical shift";
               $vert_exp = "Since the $BITALIC y${EITALIC}-coordinate of 
