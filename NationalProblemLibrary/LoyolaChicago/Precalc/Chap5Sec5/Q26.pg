        else { $ans5 = "up";
               $vert_exp = "Since the $BITALIC y${EITALIC}-coordinate of 
                            the vertex is now $k, \( \ h(x) \) has been 
                            shifted up by $k units."};
$vert_shift = $k;

$popup1 = PopUp(["Choose","A","B","C","D","E"],$ans1);
