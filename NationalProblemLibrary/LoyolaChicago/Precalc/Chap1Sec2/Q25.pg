## DBsubject('Precalculus')
## DBchapter('Linear Functions and Change')
## DBsection('Rate of Change')
## KEYWORDS('functions','average rate of change','rate of change')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('1.2')
