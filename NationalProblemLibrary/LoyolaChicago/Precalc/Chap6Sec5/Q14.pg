Context("Numeric");

# we graph the function $a cos(2* pi x)
$a = random(0.3,0.8,0.1);
$bottom = random(2,9,1);
$b = 4*$bottom;
$q = 2*$bottom;
$period = "pi/$q";
$actual_min = $k - $a;


#$ymin[0] = ($k - $a - 1 < 0) ? ($k - $a - 1) : -1;
#$ymax[0] = ($k + $a + 1 > 0) ? ($k + $a + 1) : 1;
