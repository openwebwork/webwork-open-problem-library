## DBsubject('Precalculus')
## DBchapter('Polynomial And Rational Functions')
## DBsection('Comparing Power, Exponential, And Log Functions)
## KEYWORDS('power function','exponential','log','long-run','dominate')
## TitleText1('Functions Modeling Change')
## EditionText1('3')
## AuthorText1('Connally')
## Section1('9.6)
## Problem1('11')
## TitleText2('Functions Modeling Change');
## EditionText2('4')
## AuthorText2('Connally')
## Section2('11.6')
## Problem2('12')
## Author('Adam Spiegler')
## Institution('Loyola University Chicago')

DOCUMENT();

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGchoicemacros.pl",
           "PGanswermacros.pl",
           "PGgraphmacros.pl",
           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
           "PGgraphmacros.pl",
           "MathObjects.pl",
           "PGcourse.pl",
);

TEXT(beginproblem());

Context("Numeric");

$showPartialCorrectAnswers = 1;

$a = random(2,8,2);
$b = random(3,5,2);
$c = random(40,80,2);
$p = random(100,400,25);

@pick = NchooseK(2,2);
@eqn = ("$a \ ($b)^x","$c x^{$p}" );
@let = ("f","g");
$ans = ("\( $let[$pick[0]](x) = $a \ ($b)^x \) dominates.");

$mc = new_multiple_choice();

$mc->qa("Which of the functions dominates as \( x \to \infty \)?",$ans);
$mc->extra("\( $let[$pick[1]](x) = $c x^{$p} \) dominates.");
$mc->makeLast("\( g(x) = $eqn[$pick[1]] \) dominates.",
"It cannot be determined.");

Context()->texStrings;
BEGIN_TEXT

Let \( f(x) = $eqn[$pick[0]] \ \) and \( \ g(x) = $eqn[$pick[1]] \).
$BR
\{ $mc->print_q() \}
$BR
\{ $mc->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp($mc->correct_ans));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$BBOLD  SOLUTION $EBOLD
$PAR
As \( x \to \infty \), increasing exponential functions dominate power
functions, so \( $let[$pick[0]](x) = $a \ ($b)^x \) dominates.

END_SOLUTION
Context()->normalStrings;


ENDDOCUMENT();
